SupplierEventAndResponsePage is a Page
    title is "EventsAndResponses"
    implements MenuSearch

    BrowseOpenEvents is a Panel
        business class is SourcingEvent
            list is XiOpenForBid

    SearchAllEvents is a Panel
        business class is SourcingEvent
            list is XiAllEvents

    UnsubmittedResponses is a Panel
        business class is SourcingEventResponse
            list is UnsubmittedResponses

    OpenSubmittedResponses is a Panel
        title is "ResponsesOpenForAward"
        business class is SourcingEventResponse
            list is OpenSubmittedResponses
                title is "ResponsesOpenForAward"

    EventsAndResponses is a DashBoardPanel
        use 12 column grid
        Events is a Pane
            span 3 columns
            title is "Events"
            visible when (session.key.SupplierGroup.CanViewPlanHolderOrBidTabulations)
            Layout
                single column
                    small menu
                        visible when (not session.key.SupplierGroup.SPDisablePortalPlanHolder)
                            page is EventPage.EventsWithPlanHolders
                                title is "PlanHolders"
                                menu item name is EventsWithPlanHolders
                                icon is icon.document-certified-amethyst
                        visible when (session.key.SupplierGroup.UseBidTabulationReport)
                            page is EventPage.BidTabulations
                                title is "BidTabulations"
                                menu item name is BidTabulations
                                icon is icon.document-certified-amethyst
        Responses is a Pane
            span 3 columns
            title is "Responses"
            Layout
                single column
                    small menu
                        page is BidHistory.UnsubmittedBestAndFinal
                            title is "UnsubmittedBestAndFinal"
                            menu item name is UnsubmittedBestAndFinalResponses
                            icon is icon.document-certified-amber
                        page is BidHistory.UnsubmittedPricing
                            title is "UnsubmittedPricing"
                            menu item name is UnsubmittedPricingResponses
                            icon is icon.document-certified-amber
                        page is BidHistory.EventHistory
                            title is "HistoricalResponses"
                            menu item name is HistoricalResponses
                            icon is icon.document-certified-amber
                        visible when (session.key.SupplierGroup.CanDisplayResponseModificationRequests)
                            page is BidHistory.ModificationRequests
                                title is "ModificationRequests"
                                menu item name is ResponseModificationRequests
                                icon is icon.document-certified-amber

