MobileSupplyManagementSupplierPage is a Page
    title is "SupplierPortal"

    AnonymousHomePage is a Panel
        visible when (actor.agent(SupplierSourceId).Supplier.IsAnonymous)
        Layout
            single column
                small menu
                    action is Supplier.MobileSupplierCreate
                        title is "Register"
                        menu item name is Register
                        allow anonymous access
                        description is "Register_\\as_\\aSupplier"
                        icon is icon.target-azure
                    list is SupplierPortalLinksAndInstructions.SupplierInstructionsCardList
                        title is "Instructions"
                        menu item name is Instructions
                        description is "ViewSupplierInstructions"
                        icon is icon.document-text-ruby
                    list is SupplierPortalLinksAndInstructions.SupplierLinksCardList
                        title is "Links_and_Attachments"
                        menu item name is ViewLinksAndAttachments
                        description is "ViewLinks_and_Attachments"
                        icon is icon.directory-emerald
                    list is SupplierGroupPortalContacts.MobileSupplierPortalContactCardList
                        title is "ContactUs"
                        menu item name is SendAnEmail
                        allow anonymous access
                        description is "Send_us_an_Email"
                        icon is icon.social-space-amber
                    action is SupplierSourceId.ForgotUserName
                        title is "ForgotUserName"
                        menu item name is RecoverUserName
                        allow anonymous access
                        description is "RecoverYourUserName_viaEmail"
                        icon is icon.CSFSupplyManagementViewer

    SupplierHomePage is a Panel
        visible when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
        Layout
            single column
                small menu
                    form is SupplierSourceId.MobileSupplierUpdateComposite
                        title is "MyAccount"
                        menu item name is ViewAccountInformation
                        description is "ViewAccountInformation"
                        icon is icon.look-up-azure
                    list is SupplierPortalLinksAndInstructions.SupplierInstructionsCardList
                        title is "Instructions"
                        menu item name is ViewSupplierInstructions
                        description is "ViewSupplierInstructions"
                        icon is icon.document-text-ruby
                    list is SupplierPortalLinksAndInstructions.SupplierLinksCardList
                        title is "Links_and_Attachments"
                        menu item name is ViewLinksAndAttachments
                        description is "ViewLinks_and_Attachments"
                        icon is icon.directory-emerald
                    list is SupplierGroupPortalContacts.MobileSupplierPortalContactCardList
                        title is "ContactUs"
                        menu item name is SendEmail
                        description is "Send_us_an_Email"
                        icon is icon.social-space-amber

