OrderEntryHomePageUX1 is a Page
    title is "Overview"
    implements MenuSearch

    Orders is a DashBoardPanel
        use 12 column grid
        Unreleased is a Pane
            span 6 columns
            title is "UnreleasedOrders"
            business class is CustomerOrder
                list is UnreleaseCustomerOrderCardList
                    overview navigation is ViewCustomerOrderList
        OnHoldCustomerOrders is a Pane
            span 6 columns
            title is "OnHoldOrders"
            business class is CustomerOrder
                list is OrdersOnHoldCardList
                    overview navigation is ViewOrdersOnHoldCardList
        Released is a Pane
            span 6 columns
            title is "ReleasedOrders"
            business class is CustomerOrder
                list is ReleaseCustomerOrderCardList
                    overview navigation is ViewCustomerOrderList
        CustomerOrderReturned is a Pane
            span 6 columns
            title is "ReturnedOrders"
            business class is CustomerOrderReturn
                list is EnteredCustomerOrderReturnCardList
                    overview navigation is ViewCustomerOrderReturnListNav

    Shipments is a DashBoardPanel
        use 12 column grid
        PrintedShipments is a Pane
            span 4 columns
            title is "Printed"
            business class is WarehouseShipment
                list is OrderPrintedShipmentsCardList
                    overview navigation is ViewOrderEntryPrintedShipmentsNav
        PickedShipments is a Pane
            span 4 columns
            title is "Picked"
            business class is WarehouseShipment
                list is OrderPickedShipmentsCardList
                    overview navigation is ViewOrderEntryPickedShipmentsNav
        PackedShipments is a Pane
            span 4 columns
            title is "Packed"
            business class is WarehouseShipment
                list is OrderPackedShipmentsCardList
                    overview navigation is ViewOrderEntryPackedShipmentsNav
        ShippedShipments is a Pane
            span 4 columns
            title is "Shipped"
            business class is WarehouseShipment
                list is OrderShippedShipmentsCardlist
                    overview navigation is ViewOrderEntryShippedShipmentsNav
        ReleasedShipments is a Pane
            span 4 columns
            title is "Released"
            business class is WarehouseShipment
                list is OrderReleasedShipmentsCardList
                    overview navigation is ViewOrderEntryReleasedShipmentsNav

    AllOrders is a Panel
        title is "SearchOrders"
        business class is CustomerOrder
            list is CustomerOrderAndLineList
                title is "SearchOrders"

    SearchShipments is a Panel
        business class is WarehouseShipment
            list is WarehouseShipmentForStatusListing

    Actions
        action is CustomerOrder.Unreleased.Create
            label is "CreateOrder"
        action is refresh
            label is "_"
