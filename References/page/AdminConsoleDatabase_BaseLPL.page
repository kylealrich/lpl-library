AdminConsoleDatabase is a Page
    title is "Database"
    implements MenuSearch

    Database is a DashBoardPanel
        use 12 column grid
        Export is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        action is DbExport.RunCommand
                            title is "ExportFromDatabase"
                            menu item name is DbExportRunCommand
                            description is "UseThisUtilityToExportDataFromTheApplicationDatabase"
                            icon is icon.export-2
                        action is WorkFileExport.RunCommand
                            title is "ExportFromWorkfile"
                            menu item name is WorkFileExportRunCommand
                            description is "UseThisUtilityToExportDataFromTheApplicationDatabase"
                            icon is icon.export-spreadsheet
                        action is DETExport.RunCommand
                            title is "ExportTranslatedData"
                            menu item name is DETExportRunCommand
                            description is "ExportTranslatedData"
                            icon is icon.translate
        Import is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        action is DbImport.RunCommand
                            title is "ImportToDatabase"
                            menu item name is DbImportRunCommand
                            description is "UseThisUtilityToImportDataIntoTheApplicationDatabase.DoesNotFollowApplicaitonBusinessLogicRulesOrPolicies"
                            icon is icon.import
                        action is WorkFileImport.RunCommand
                            title is "ImportToWorkfile"
                            menu item name is WorkFileImportRunCommand
                            description is "UseThisUtilityToImportDataIntoTheApplicationDatabase.DoesNotFollowApplicaitonBusinessLogicRulesOrPolicies"
                            icon is icon.import-spreadsheet
                        action is DETImport.RunCommand
                            title is "ImportTranslatedData"
                            menu item name is DETImportRunCommand
                            description is "ImportTranslatedData"
                            icon is icon.translate
        Inspect is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        action is DbCount.RunCommand
                            title is "CountRows"
                            menu item name is DbCountRunCommand
                            description is "UseThisUtilityToGetRowCOuntsForSpecifiedDatabaseTables"
                            icon is icon.number
                        list is DBSessionDebug.DBSessionDebugList
                            title is "DBSessionDebugLogs"
                            menu item name is DBSessionDebug
                            description is "RetrieveYourDBSessionDebugLogOutput"
                            icon is icon.technology
        Maintenance is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        action is DbUpdateLobs.RunCommand
                            title is "UpdateLargeObjects"
                            menu item name is DbUpdateLobsRunCommand
                            description is "UtilityToUpdateBinaryLargeObjectsSuchAsImagesOrDocumentsAcrossRows"
                            icon is icon.insert-image
                        action is UserFieldStorageMaint.RunCommand
                            title is "UserFieldStorageMaintenance"
                            menu item name is UserFieldStorageMaintRunCommand
                            description is "UtilityToUpdateBinaryLargeObjectsSuchAsImagesOrDocumentsAcrossRows"
                            icon is icon.travel-plan
                        action is PurgeData.RunCommand
                            title is "PurgeData"
                            menu item name is PurgeData
                            description is "AGenericPurgeActionForPurgingRecordsFromTheDatabase"
                            icon is icon.delete-grid-record
        DataMovement is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        page is AppSetupPage
                            title is "ApplicationSetupConfiguration"
                            menu item name is ApplicationSetupConfiguration
                            description is "ManageTheConfigurationSetupForConfigurationManagement.ControlsTheExportAndImportOfApplicationSetupDataAcrossTenants"
                            icon is icon.building
                        list is BusinessView.CopyActions
                            title is "DataRefreshRules"
                            menu item name is CopyActions
                            description is "ViewHowDataRefreshPurgesOrPreservesDataOnTheTarget"
                            icon is icon.travel-plan
        Archiving is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        action is MoveDataFromArchive.RunCommand
                            title is "MoveDataFromArchive"
                            menu item name is MoveDataFromArchiveRunCommand
                            description is "UseThisUtilityToMoveDataFromArchiveStorageIntoActiveStorage"
                            icon is icon.export-spreadsheet
                        action is MoveDataToArchive.RunCommand
                            title is "MoveDataToArchive"
                            menu item name is MoveDataToArchiveRunCommand
                            description is "UseThisUtilityToMoveDataFromActiveStorageIntoArchiveStorage"
                            icon is icon.import-spreadsheet

