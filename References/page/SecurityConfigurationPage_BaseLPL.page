SecurityConfigurationPage is a Page
    title is "SecurityConfiguration"

    Create is a Panel
        Layout
            header1 of "TailorSecurity"
            single column
                large menu
                    action is SecurityClass.CreateConfiguration
                        title is "CreateSecurityClass"
                        menu item name is CreateSecurityClass
                        icon is icon.listEmeraldOutline
                    action is SecurityClass.CreateCopy
                        title is "CopySecurityClass"
                        menu item name is CopySecurityClass
                        icon is icon.formAzureOutline
                    action is SecurityClass.CreateExtended
                        title is "ExtendSecurityClass"
                        menu item name is ExtendSecurityClass
                        icon is icon.formAzureOutline

    Console is a Panel
        business class is ConfigEntity
            list is SecurityConsoleList

    Master is a Panel
        business class is ConfigEntity
            list is MasterSecurityList

