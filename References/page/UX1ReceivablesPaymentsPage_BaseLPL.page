UX1ReceivablesPaymentsPage is a Page
    title is "Payments"
    implements MenuSearch

    PaymentsReplicated is a Panel
        title is "Replicated"
        business class is ReceivablePayment
            list is ColumnarList
                title is "Replicated"
            visible when (actor.context.FinanceEnterpriseGroup.ShowReceivablesColumnarSearch)
    Payments is a MultiPanePanel
        Search Terms
                "Payment"
                "ReceivablePayment"
                "ReceivablePayments"
                "OpenPayments"
                "OpenPayment"
                "AllPayments"
                "AllPayment"
        pane 1
            business class is ReceivablePayment
                list is UX1OpenPaymentsList
        pane 2
            business class is ReceivablePayment
                list is UX1PaymentList

    Batches is a Panel
        Search Terms
                "Batch"
                "PaymentBatch"
                "PaymentBatches"
                "PaymentHeader"
                "PaymentHeaders"
                "ReceivablePaymentHeader"
        business class is ReceivablePaymentHeader
            list is MyReceivablePaymentHeaderList

    Unassigned is a Panel
        Search Terms
                "UnassignedPayment"
                "UnassignedPayments"
                "UnassignedReceivablePayment"
                "UnassignedCash"
        business class is ReceivablePayment
            list is UnassignedCashList

    Customer is a Panel
        Search Terms
                "CustomerPayments"
                "CustomerPayment"
                "CustomerCash"
        business class is ReceivablePayment
            list is CustomerCashList

    NonAR is a Panel
        Search Terms
                "NonARPayments"
                "NonARPayment"
                "NonARCash"
        business class is ReceivablePayment
            list is NonARCashList

    ReturnToMaker is a Panel
        Search Terms
                "ReturnToMakerPayment"
                "ReturnToMakerPayments"
                "RTMPayment"
                "RTMPayments"
        business class is RTMPayment
            list is RTMPaymentList

    Transfers is a MultiPanePanel
        Search Terms
                "Transfer"
                "TransferPayments"
                "TransferPayment"
                "PaymentsAvailableForTransfer"
                "Transferred"
                "TransferredPayments"
        pane 1
            business class is ReceivablePayment
                list is TransfersList
        pane 2
            business class is ReceivablePayment
                list is ShortTransferredPaymentsList

    Applications is a Panel
        Search Terms
                "PaymentApplications"
                "PaymentApplication"
                "PaymentsWithApplications"
                "AppliedPayments"
        business class is ReceivablePayment
            list is ReviewPaymentApplicationsList

    CashBatchException is a Panel
        title is "Exceptions"
        Search Terms
                "Exception"
                "CashBatchExceptions"
                "CashBatchException"
                "PaymentBatchExceptions"
                "PaymentBatchException"
                "PaymentExceptions"
        business class is ReceivablePaymentHeader
            list is CashBatchExceptionList
                title is "Exceptions"

