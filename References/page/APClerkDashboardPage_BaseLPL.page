APClerkDashboardPage is a Page
    title is "ProcessInvoices"
    show panel control on left

    Dashboard is a DashBoardPanel
        title is "Dashboard"
        use 12 column grid
        OverdueInvoices is a Pane
            span 6 columns
            business class is PayablesInvoice
                list is APProcessorHomepageDashboardOverduePayablesInvoiceList
                    title is "OverdueInvoices"
                    overview navigation is APClerkOverduePayablesInvoices
                        label is "Detail"
        OpenVendorInvoices is a Pane
            span 6 columns
            business class is PayablesInvoice
                list is APManagerDashboardOpenVendorInvoices
                    title is "OpenInvoicesByDueDate"
                    overview navigation is APManagerOpenVendorInvoices
                        label is "Detail"
        ByStatus is a Pane
            span 4 columns
            business class is FinanceResource.APClerkPayablesInvoiceRel
                list is APManagerInvoicesByStatus
                    title is "InvoiceCountByStatus"
                    display InvoiceStatusCubePieChartList
                    overview navigation is APManagerInvoicesByStatusCubeLink
                        label is "Detail"
                Context
                    HROrganization
                    FinanceResource

