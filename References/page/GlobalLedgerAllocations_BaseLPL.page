GlobalLedgerAllocations is a Page
    title is "Allocations"
    implements MenuSearch

    ActualsControl is a Panel
        business class is AllocationControl
            list is AllocationControlActualsList

    ActualsRun is a Panel
        business class is AllocationRun
            list is AllocationRunMenuList

    BudgetControl is a Panel
        business class is AllocationControl
            list is AllocationControlBudgetList

    BudgetRun is a Panel
        business class is AllocationRun
            list is BudgetAllocationRunMenuList

    JournalizedLog is a Panel
        business class is AllocationJournalizeLog
            list is GLAllocationJournalizeLog

    GLAllocationsPanel is a DashBoardPanel
        title is "More"
        use 12 column grid
        GLAllocationsPane is a Pane
            span 6 columns
            title is "Allocations"
            Layout
                two column distributed
                    list is BusinessClassTotal.BusinessClassTotals
                        title is "CustomTotal"
                        menu item name is CustomTotal
                        icon is icon.document-pie-chart-amethyst
                    list is BusinessClassCompute.BusinessClassComputes
                        title is "CustomComputes"
                        menu item name is CustomComputes
                        icon is icon.document-pie-chart-amethyst
                    list is BusinessClassGroup.BusinessClassGroups
                        title is "CustomGroups"
                        menu item name is CustomGroups
                        icon is icon.document-pie-chart-amethyst
                    list is AllocationLineOverrideSet.AllocationLineOverrideSetList
                        title is "LineOverrideGroups"
                        menu item name is LineOverrideGroups
                        icon is icon.document-pie-chart-amethyst
                    visible when (actor.context.FinanceEnterpriseGroup.FundAccounting)
                        list is AllocationFinanceStructureRule.primary
                            title is "FundAccountingRules"
                            menu item name is FundAccountingRules
                            icon is icon.document-pie-chart-amethyst
                    list is SampleComputeStatement.SampleComputeStatementList
                        title is "SampleCustomComputes"
                        menu item name is SampleCustomComputes
                        icon is icon.document-pie-chart-amethyst
        AllocationsActions is a Pane
            span 3 columns
            title is "Actions"
            Layout
                single column
                    action is AllocationLine.SetAllLinesActive
                        title is "SetAllLinesActive"
                        menu item name is SetAllLinesActive
                        icon is icon.outline-process-ruby
                    action is CloseCostAllocationPeriod.ScheduleCostAllocationPeriodClose
                        title is "CloseCostAllocationPeriod"
                        menu item name is CloseCostAllocationPeriod
                        icon is icon.outline-process-ruby

