ProjectAccountantBurdensPageUX1 is a Page
    title is "IndirectBurdens"
    implements MenuSearch

    Projects is a Panel
        title is "<actor.context.FinanceEnterpriseGroup.ProjectLabel>List"
        business class is Project
            list is PostingProjectsIndirectBurdenList
                title is "<actor.context.FinanceEnterpriseGroup.ProjectLabel>List"

    IndirectBurdenCodes is a Panel
        business class is ProjectIndirectBurdenCode
            list is ProjectIndirectBurdenCodes

    ProjectIndirectBurdenCodes is a Panel
        business class is ProjectIndirectBurden
            list is ProjectIndirectBurdenList

    BurdenProcessing is a DashBoardPanel
        title is "BurdenProcesses"
        use 12 column grid
        Processes is a Pane
            span 12 columns
            double height
            Layout
                two column distributed
                    column1
                        large menu
                            action is ProjectIndirectBurdenTransaction.RemoveBurdenAPHold
                                title is "RemoveIndirectBurdenAPHold"
                                menu item name is RemoveIndirectBurdenAPHold
                                description is "Run_this_action_to_remove_burdens_from_AP_Hold._Removes_burden_transaction_from_hold_for_billing_if_originating_expense_is_now_eligible."
                                icon is icon.settings-azure
                        large menu
                            action is Project.GenerateIndirectBurdenTransactions
                                title is "GenerateIndirectBurdenTransactions"
                                menu item name is GenerateIndirectBurdenTransactions
                                description is "Run_this_action_to_create_indirect_burden_transactions_for_administration_and_overhead_fees_based_on_project_direct_expenses._Status_is_updated_to_created."
                                icon is icon.settings-azure
                    column2
                        large menu
                            action is ProjectIndirectBurdenTransaction.ValidateIndirectBurdenJournalEntries
                                title is "ValidateIndirectBurdenJournalEntries"
                                menu item name is ValidateIndirectBurdenJournalEntries
                                description is "Run_this_action_to_validate_journal_entries_before_running_journalize_indirect_burden_transactions_action._Access_validation_errors_via_results_validation_errors_link."
                                icon is icon.settings-azure
                        large menu
                            action is ProjectIndirectBurdenTransaction.JournalizeIndirectBurdenTransactions
                                title is "JournalizeIndirectBurdenTransactions"
                                menu item name is JournalizeIndirectBurdenTransactions
                                description is "Run_journalize_action_to_create_indirect_burden_journals._Indirect_burden_transactions_are_updated_to_journalized_status."
                                icon is icon.settings-azure
        Results is a Pane
            span 6 columns
            double height
            Layout
                single column
                    column1
                        large menu
                            list is ProjectIndirectBurdenTransaction.AllProjectIndirectBurdenTransactionList
                                title is "BurdenTransactions"
                                menu item name is BurdenTransactions
                                description is "View_and_maintain_indirect_burden_transactions._Use_the_status_field_to_view_created_or_journalized_transactions."
                                icon is icon.clipboard-list-emerald
                        large menu
                            list is JournalizeGroupResult.JournalizeGroupResults
                                title is "JournalizeGroupResults"
                                menu item name is JournalizeGroupResults
                                description is "View_journalized_distributions."
                                icon is icon.clipboard-list-emerald
        DeleteAndReverse is a Pane
            span 6 columns
            double height
            Layout
                single column
                    column1
                        large menu
                            action is ProjectIndirectBurdenTransaction.DeleteRunGroup
                                title is "DeleteRunGroup"
                                menu item name is DeleteRunGroup
                                description is "Run_delete_action_to_delete_created_indirect_burden_transactions_in_mass."
                                icon is icon.settings-amethyst
                        large menu
                            action is ProjectIndirectBurdenTransaction.ReverseJournalizedIndirectBurdens
                                title is "ReverseJournalizedBurdenTransactions"
                                menu item name is ReverseJournalizedBurdenTransactions
                                description is "Run_this_action_to_reverse_journalized_indirect_burden_transactions._Results_in_a_reversing_journal_entry."
                                icon is icon.settings-amethyst

    Errors is a Panel
        title is "Errors"
        business class is ProjectStructureValidationResult
            list is ProjectStructureValidationIndirectBurdenResultList
                title is "Errors"

