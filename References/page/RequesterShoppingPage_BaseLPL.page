RequesterShoppingPage is a Page
    cart form is Requisition.CartCompositeForm

    SearchTheCatalog is a Panel
        visible when (actor.agent(Employee).Employee.Requester.CatalogSearchAllowed)
        business class is KeywordShadow
            list is RSSLPLItemsForRequisition

    MyRecentlyRequestedItems is a Panel
        business class is RequisitionLine
            list is RSSLPLRecentlyRequestedItemsFull

    AddFromShoppingLists is a Panel
        visible when (actor.agent(Employee).Employee.Requester.ShoppingListsAllowed)
        business class is ProcurementTemplateParticipant
            list is RSSLPLProcurementTemplateDashboard

    ShopPunchoutVendors is a Panel
        visible when (actor.agent(Employee).Employee.Requester.PunchoutAllowed)
        business class is RequesterPunchoutVendor
            list is RSSLPLShopPunchoutVendorsList

    RecentSpecialService is a Panel
        title is "SpecialAndServiceItems"
        visible when (actor.agent(Employee).Employee.Requester.SpecialServicesAllowed)
        business class is RequisitionLine
            list is RSSLPLRequisitionSpecialLineForARequester
                title is "SpecialAndServiceItems"

    Actions
        action is save
            valid when (false)
        action is refresh
