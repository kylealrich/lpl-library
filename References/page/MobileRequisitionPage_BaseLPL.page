    title is "Requisitions"

    Current is a MultiPanePanel
        pane 1
            business class is Requisition
                list is MobileCurrentRequisition
        pane 2
            business class is pane 1.RequisitionLine set
                list is MobileShoppingLines

    RecentItems is a Panel
        business class is RequisitionLine
            list is MobileRecentlyRequestedItemsImageView

    Recent is a Panel
        visible when (false)
        business class is RequisitionLine
            list is MobileRecentlyRequestedItems

    Requisitions is a Panel
        business class is Requisition
            list is MobileMyRequisitions

