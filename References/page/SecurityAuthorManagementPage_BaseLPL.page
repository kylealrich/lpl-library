SecurityAuthorManagementPage is a Page
    title is "AuthorManagement"

    SecurityClasses is a Panel
        title is "SecurityClasses"
        business class is SecurityClass
            list is SecurityClassList
                title is "SecurityClasses"

    SecurityClassUtility is a DashBoardPanel
        use 12 column grid
        Utilities is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        action is ScExport.RunCommand
                            title is "Export"
                            menu item name is ScExportRunCommand
                            description is "Use_this_procedure_to_export_security_classes_in_Zip_format."
                            icon is icon.export-2
                    large menu
                        action is ScImport.RunCommand
                            title is "Import"
                            menu item name is ScImportRunCommand
                            description is "Use_this_procedure_to_import_security_classes_contained_in_a_Zip_file."
                            icon is icon.import
                    large menu
                        action is ScCopy.RunCommand
                            title is "Copy"
                            menu item name is ScCopyRunCommand
                            description is "Use_this_procedure_to_copy_a_security_class_details_to_another_security_class."
                            icon is icon.copy-filled
                    large menu
                        action is ScImportList.RunCommand
                            title is "List_aSecurityClassImportZipFile"
                            menu item name is ScImportListRunCommand
                            icon is icon.tree-zip

    Role is a Panel
        title is "Role"
        business class is Role
            list is RoleList
                title is "Role"

    RoleSecurityClass is a Panel
        title is "RoleSecurityClass"
        business class is RoleSecurityClass
            list is CurrentDataAreaPoliciesList
                title is "RoleSecurityClass"

    ContextPropertyList is a Panel
        title is "ContextProperty"
        business class is ContextProperty
            list is ContextPropertyList
                title is "ContextProperty"

    RoleGroups is a Panel
        title is "RoleGroups"
        business class is RoleGroup
            list is RoleGroupList
                title is "RoleGroups"

    MenuSecurityImport is a Panel
        Layout
            single column
                small menu
                    action is MsImport.RunCommand
                        title is "MenuSecurityImport"
                        menu item name is MenuSecurityImport
                        icon is icon.import

