UX1BillingRecurringInvoicesPage is a Page
    title is "RecurringInvoices"
    implements MenuSearch

    Dashboard is a MultiPanePanel
        pane 1
            business class is RecurringInvoiceParameter
                list is RecurringInvoiceParametersList
        pane 2
            business class is CustomerRecurringInvoice
                list is CustomerRecurringInvoicesList

    Interface is a DashBoardPanel
        use 12 column grid
        Interface is a Pane
            span 6 columns
            Layout
                two column distributed
                    column1
                        large menu
                            action is CreateRecurringInvoices.CreateRecurringInvoices
                                title is "CreateRecurringInvoices"
                                menu item name is CreateRecurringInvoices
                                description is "Interface recurring invoices into billing"
                                icon is icon.outline-process-ruby
                    column2
                        large menu
                            list is RecurringBillingItemOperator.primary
                                title is "RecurringBillingItemOperator"
                                menu item name is RecurringBillingItemOperator
                                description is "Control item's quantity limit and charges on a recurring invoice"
                                icon is icon.settings-azure

