UX1ReceivablesInvoicesPage is a Page
    title is "Invoices"
    implements MenuSearch

    InvoiceDetailsReplicated is a Panel
        title is "InvoiceDetails_(Replicated)"
        business class is ReceivableInvoiceDetail
            list is ColumnarList
                title is "InvoiceDetails_(Replicated)"
            visible when (actor.context.FinanceEnterpriseGroup.ShowReceivablesColumnarSearch)
    InvoicesReplicated is a Panel
        title is "Invoices_(Replicated)"
        business class is ReceivableInvoice
            list is ColumnarList
                title is "Invoices_(Replicated)"
            visible when (actor.context.FinanceEnterpriseGroup.ShowReceivablesColumnarSearch)
    InvoiceDetails is a MultiPanePanel
        Search Terms
                "Detail"
                "Details"
                "InvoiceDetail"
                "ReceivableInvoiceDetail"
                "OpenInvoiceDetails"
                "OpenInvoiceDetail"
                "AllInvoiceDetails"
                "AllInvoiceDetail"
        pane 1
            business class is ReceivableInvoiceDetail
                list is OpenInvoiceDetailsHome
        pane 2
            business class is ReceivableInvoiceDetail
                list is InvoiceDetailsHome

    Invoices is a Panel
        Search Terms
                "Invoice"
                "Transaction"
                "Transactions"
        business class is ReceivableInvoice
            list is ReceivableInvoiceList

    Batches is a Panel
        Search Terms
                "Batch"
                "InvoiceBatch"
                "InvoiceBatches"
        business class is ReceivableInvoiceBatch
            list is ReceivableInvoiceBatchList

    Unreleased is a Panel
        Search Terms
                "UnreleasedInvoices"
                "UnreleasedInvoice"
                "UnreleasedTransactions"
                "UnreleasedTransaction"
        business class is ReceivableInvoice
            list is UnreleasedTransactions

    Recurring is a DashBoardPanel
        use 12 column grid
        visible when (actor.context.FinanceEnterpriseGroup.ShowRecurringInvoiceForReceivables)
        RecurringInvoiceMaintenance is a Pane
            span 6 columns
            title is "Process"
            Layout
                two column distributed
                    large menu
                        list is RecurringInvoiceTemplate.RecurringInvoiceTemplatesList
                            title is "RecurringInvoiceTemplates"
                            menu item name is RecurringInvoice
                            description is "Templates_to_create_the_Receivable_Invoice"
                            icon is icon.outline-list-emerald
                            Search Terms
                                    "InvoiceTemplate"
                                    "RecurringInvoice"
                                    "Invoice"
                        action is ReceivablesJobResult.CreateRecurringInvoices
                            title is "ProcessRecurringInvoices"
                            menu item name is CreateRecurringInvoices
                            description is "Creates_Receivable_Invoices_from_Customer_Recurring_Invoice_Templates."
                            icon is icon.outline-process-emerald
                            Search Terms
                                    "Recurring"
                                    "RecurringInvoice"
                                    "CreateRecurringInvoice"
        RecurringInvoiceResults is a Pane
            span 6 columns
            business class is ReceivablesJobResult
                list is RecurringInvoiceResultList
                    overview navigation is RecurringInvoiceResults

    Disputes is a MultiPanePanel
        title is "Disputes"
        Search Terms
                "Dispute"
                "UnresolvedDispute"
                "UnresolvedDisputes"
                "ResolvedDispute"
                "ResolvedDisputes"
                "OpenDispute"
                "OpenDisputes"
                "ClosedDispute"
                "ClosedDisputes"
        pane 1
            business class is ReceivableInvoiceDispute
                list is OpenDisputes
                    title is "OpenDisputes"
        pane 2
            business class is ReceivableInvoiceDispute
                list is ResolvedDisputes
                    title is "ResolvedDisputes"

    Transfers is a MultiPanePanel
        title is "Transfers"
        Search Terms
                "Transfer"
                "TransferInvoices"
                "TransferInvoice"
                "InvoicesAvailableForTransfer"
                "Transferred"
                "TransferredInvoices"
        pane 1
            business class is ReceivableInvoice
                list is ShortTransferList
                    title is "InvoicesAvailableForTransfer"
        pane 2
            business class is ReceivableInvoiceTransfer
                list is ShortReceivableInvoiceTransferredList
                    title is "TransferredInvoices"

    ObligationGroupings is a Panel
        Search Terms
                "ObligationGrouping"
                "SelectACustomerToCreateObligationGroupings"
                "SelectACustomerToCreateObligationGrouping"
        business class is CompanyCustomer
            list is TransactionObligationGroupingList

    InvoiceApplications is a Panel
        title is "Applications"
        Search Terms
                "InvoiceApplications"
                "InvoiceApplication"
                "InvoicesWithApplications"
                "AppliedInvoices"
        business class is ReceivableInvoiceDetail
            list is TransactionApplicationsInvoiceDetailList
                title is "Applications"

    InvoiceDetailExceptions is a Panel
        title is "Exceptions"
        Search Terms
                "Exception"
                "InvoiceDetailExceptions"
                "InvoiceDetailException"
                "InvoiceExceptions"
                "InvoiceException"
                "DetailExceptions"
                "DetailException"
        business class is ReceivableInvoiceDetail
            list is ReceivableInvoiceDetailExceptionList
                title is "Exceptions"

