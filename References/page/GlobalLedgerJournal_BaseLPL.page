GlobalLedgerJournal is a Page
    title is "Journals"
    implements MenuSearch

    GLProcessingDashboard is a DashBoardPanel
        title is "Main"
        use 12 column grid
        QuickLinks is a Pane
            span 6 columns
            title is "ImportantLinks"
            Layout
                two column distributed
                    large menu
                        action is GeneralLedgerJournalControl.Unreleased.Create
                            title is "CreateJournal"
                            menu item name is CreateJournal
                            description is "Create_a_new_journal_entry"
                            icon is icon.outline-form-azure
                        action is PostJournals.SchedulePosting
                            title is "PostJournals"
                            menu item name is PostJournals
                            description is "Schedule_to_post_journals"
                            icon is icon.settings-azure
                        page is RecurringJournal
                            title is "RecurringJournals"
                            menu item name is RecurringJournals
                            description is "Manage_recurring_journals"
                            icon is icon.outline-form-azure
                        action is JournalizeRecurringJournal.ScheduleJournalizeRecurringJournal
                            title is "JournalizeRecurringJournals"
                            menu item name is JournalizeRecurringJournals
                            description is "Run_process_to_create_recurring_journal_entries"
                            icon is icon.settings-azure
                        page is GeneralLedgerTransactionInterfacePage
                            title is "TransactionInterface"
                            menu item name is TransactionInterface
                            description is "Manage_interface_run_groups"
                            icon is icon.outline-form-azure
                        list is EntityLedgerPeriod.EntityLedgerPeriodList
                            title is "PeriodStatus"
                            menu item name is PeriodStatus
                            description is "View_and_update_close_periods"
                            icon is icon.outline-list-azure
                        list is ReportingBasis.ReportingBasisWithJournalReference
                            title is "JournalReferences"
                            menu item name is JournalReferences
                            description is "View_sequential_list_of_journals_for_a_reporting_basis"
                            icon is icon.outline-list-azure
        GuidedSearch is a Pane
            span 6 columns
            title is "SearchTransactions"
            Layout
                two column distributed
                    large menu
                        list is GeneralLedgerTotal.GeneralLedgerScenarioSearchList
                            title is "ByScenario"
                            menu item name is ByScenario
                            description is "Use_to_efficiently_search_for_specific_scenarios_in_Totals"
                            icon is icon.search-amber
                        page is TransactionPage.SearchTransactionsByAccount
                            title is "ByAccount"
                            menu item name is ByAccount
                            description is "Use_when_you_want_to_search_Transactions_by_Account"
                            icon is icon.search-amber
                        page is TransactionPage.SearchTransactionsByAccountingEntity
                            title is "ByEntity"
                            menu item name is ByEntity
                            description is "Use_when_you_want_to_search_Transactions_by_Entity"
                            icon is icon.search-amber
                        page is TransactionPage.SearchTransactionsByAccountingUnit
                            title is "ByAccountingUnit"
                            menu item name is ByAccountingUnit
                            description is "Use_when_you_want_to_search_Transactions_by_AccountingUnit"
                            icon is icon.search-amber
                        page is TransactionPage.SearchTransactionsByPostingDate
                            title is "ByPostingDate"
                            menu item name is ByPostingDate
                            description is "Use_when_you_want_to_search_Transactions_by_PostingDate"
                            icon is icon.search-amber
                        page is TransactionAnalysis
                            title is "Columnar"
                            menu item name is Columnar
                            description is "Lists_using_columnar_replication_sets_as_the_source_for_Total,_Transaction,_and_Transaction_Detail"
                            icon is icon.search-amber
        CodePane is a Pane
            span 3 columns
            title is "Codes"
            Layout
                single column
                    list is ApprovalCode.ApprovalCodes
                        title is "Approval"
                        menu item name is Approval
                        icon is icon.outline-list-ruby
                    list is GeneralLedgerHoldCode.primary
                        title is "Hold"
                        menu item name is Hold
                        icon is icon.outline-list-ruby
        JournalProcessing is a Pane
            span 3 columns
            title is "Results"
            Layout
                single column
                    page is RJJournalizeReport
                        title is "RecurringJournals"
                        menu item name is RecurringJournals
                        icon is icon.outline-form-emerald
                    list is JournalizeGroupResult.JournalizeGroupResults
                        title is "JournalizeGroup"
                        menu item name is JournalizeGroup
                        icon is icon.outline-form-emerald
                    page is JournalPostingReport
                        title is "PostedJournals"
                        menu item name is PostedJournals
                        icon is icon.outline-form-emerald
        OtherJournals is a Pane
            span 3 columns
            title is "Others"
            Layout
                single column
                    page is DepartmentJournalPage
                        title is "DepartmentJournals"
                        menu item name is DepartmentJournals
                        icon is icon.outline-form-amethyst
                    page is GLJournalTemplatePage
                        title is "Templates&Processing"
                        menu item name is TemplatesAndProcessing
                        icon is icon.outline-form-amethyst
                    visible when (actor.context.FinanceEnterpriseGroup.GLSystemTrackAndEdit)
                        page is ManualEncumbrancePage
                            title is "ManualEncumbrance"
                            menu item name is ManualEncumbrance
                            icon is icon.outline-form-amethyst

    Search is a Panel
        business class is GeneralLedgerJournalControl
            list is JournalControlSearchList
            Context
                FinanceEnterpriseGroup

    Unreleased is a Panel
        business class is GeneralLedgerJournalControl
            list is GeneralLedgerUnreleasedJournalList
            Context
                FinanceEnterpriseGroup

    PendingApproval is a Panel
        business class is GeneralLedgerJournalControl
            list is GeneralLedgerPendingApprovalJournalList
            Context
                FinanceEnterpriseGroup

    Released is a Panel
        business class is GeneralLedgerJournalControl
            list is GeneralLedgerReleasedJournalList
            Context
                FinanceEnterpriseGroup

    Posted is a Panel
        business class is GeneralLedgerJournalControl
            list is GeneralLedgerPostedJournalList
            Context
                FinanceEnterpriseGroup

    Deleted is a Panel
        business class is GeneralLedgerJournalControl
            list is GeneralLedgerDeletedJournalList
            Context
                FinanceEnterpriseGroup

