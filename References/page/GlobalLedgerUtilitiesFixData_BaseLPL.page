GlobalLedgerUtilitiesFixData is a Page
    title is "Utilities"

    Utilities is a DashBoardPanel
        title is "Utilities"
        use 12 column grid
        RebuildFixData is a Pane
            span 12 columns
            title is "Rebuild_to_fix_data"
            Layout
                three column distributed
                    large menu
                        action is RebuildLedgerEntityPairs.ScheduleRebuildLedgerEntityPairs
                            title is "RebuildPairsForLedger<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>"
                            menu item name is RebuildPairsForLedgerAccountingEntity
                            description is "Rebuild_system_structure_relations_between_Ledger_and_<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>"
                            icon is icon.settings-azure
                        visible when (actor.context.FinanceEnterpriseGroup.AccountingUnitSelected)
                            action is RebuildOrganizationPairs.ScheduleRebuildOrganizationPairs
                                title is "RebuildOrganizationPairs"
                                menu item name is RebuildOrganizationPairs
                                description is "Rebuild_system_structure_relations_between_<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>_<actor.context.FinanceEnterpriseGroup.AccountingUnitLabel>"
                                icon is icon.settings-azure
                        action is FixEntityPeriod.ScheduleFixEntityPeriod
                            title is "<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>PeriodRebuild"
                            menu item name is AccountingEntityPeriodRebuild
                            description is "Run_this_if_close_periods_are_missing"
                            icon is icon.settings-azure
                        action is RebuildTotals.ScheduleRebuildTotals
                            title is "RebuildTotals"
                            menu item name is RebuildTotals
                            description is "Run_this_if_Totals_are_out_of_sync_with_Transactions"
                            icon is icon.settings-azure
                        action is RebuildUndistributedRetainedEarnings.ScheduleRebuildUndistributedRetainedEarnings
                            title is "RebuildUndistributedRetainedEarnings"
                            menu item name is RebuildUndistributedRetainedEarnings
                            description is "Run_this_if_undistributed_retained_earnings_are_out_of_sync_with_net_income_gain/loss"
                            icon is icon.settings-azure
                        action is FinanceEnterpriseGroup.RebuildCalendarDateAndPeriod
                            title is "RebuildCalendarDateAndPeriods"
                            menu item name is RebuildCalendarDateAndPeriods
                            description is "Run_this_to_rebuild_the_calendar_date_and_periods_for_average_daily_balance_reporting"
                            icon is icon.settings-azure
                        action is ResetAverageDailyBalance.ResetAverageDailyBalance
                            title is "RebuildAverageDailyBalance"
                            menu item name is RebuildAverageDailyBalance
                            description is "Run_this_to_rebuild_the_average_daily_balance_reports"
                            icon is icon.settings-azure
                        action is AccountingEntity.FillEntityDimensionType
                            title is "FillEntityDimensionType"
                            menu item name is FillEntityDimensionType
                            description is "Populates_dimension_type_if_empty_for_<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>"
                            icon is icon.settings-azure

