ProcessDesignerHomePage is a Page
    title is "ProcessDesigner"

    Overview is a DashBoardPanel
        use 12 column grid
        Actions is a Pane
            span 2 columns
            Layout
                single column
                    large menu
                        action is PfiImportProcess.DoImport
                            title is "Import"
                            menu item name is Import
                            description is "Import a process"
                            icon is icon.desktoptileInbasket
        MyRecentlyUpdatedProcesses is a Pane
            span 5 columns
            business class is PfiFlowVersion
                list is MyUpdatesOverviewList
                    overview navigation is MyUpdatesNav
                        label is "ViewAll"
        ProcessesUpdatedByOthers is a Pane
            span 5 columns
            business class is PfiFlowVersion
                list is OtherUpdatesOverviewList
                    overview navigation is OtherUpdatesNav
                        label is "ViewAll"
        UserDefinedProcesses is a Pane
            span 6 columns
            business class is PfiFlowDefinition
                list is OverviewUserDefinedFlows
                    overview navigation is UserDefinedFlowsNav
                        label is "ViewAll"
        ApplicationDefinedProcesses is a Pane
            span 6 columns
            business class is PfiFlowDefinition
                list is OverviewApplicationDefinedFlows
                    overview navigation is ApplicationDefinedFlowsNav
                        label is "ViewAll"

    AllProcesses is a Panel
        business class is PfiFlowDefinition
            list is AllFlows

    AllUpdates is a Panel
        business class is PfiFlowVersion
            list is AllProcessUpdates

