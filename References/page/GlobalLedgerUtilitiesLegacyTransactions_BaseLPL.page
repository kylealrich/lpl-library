GlobalLedgerUtilitiesLegacyTransactions is a Page
    title is "Utilities"

    Utilities is a DashBoardPanel
        title is "Utilities"
        use 12 column grid
        LegacyPane is a Pane
            span 4 columns
            title is "LegacyTransactions"
            Layout
                single column
                    action is BuildLegacyFiles.BuildLegacyTransactionFiles
                        title is "BuildLegacyFiles"
                        menu item name is BuildLegacyFiles
                        icon is icon.settings-emerald
                    visible when (actor.context.FinanceEnterpriseGroup.ShowLegacyColumnar)
                        action is DataCreation.CreateLegacyReplicationSet
                            title is "CreateLegacyReplicationSet"
                            menu item name is CreateLegacyReplicationSet
                            icon is icon.settings-emerald
                    visible when (actor.context.FinanceEnterpriseGroup.ShowLegacyColumnar)
                        list is DataCreationResult.CreateReplicationSetsResults
                            title is "ViewReplicationSetsResults"
                            menu item name is ViewReplicationSetsResults
                            icon is icon.settings-emerald

