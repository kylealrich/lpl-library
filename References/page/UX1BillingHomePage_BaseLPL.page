UX1BillingHomePage is a Page
    title is "Overview"
    implements MenuSearch

    Dashboard is a DashBoardPanel
        use 12 column grid
        UnreleasedInvoices is a Pane
            span 4 columns
            business class is BillingInvoice
                list is UnreleasedInvoicesList
                    overview navigation is UnreleasedInvoicesNav
        UnreleasedCreditMemos is a Pane
            span 4 columns
            business class is BillingInvoice
                list is UnreleasedCreditMemosList
                    overview navigation is UnreleasedCreditMemosNav
        ReleasedInvoices is a Pane
            span 4 columns
            business class is BillingInvoice
                list is ReleasedInvoicesList
                    overview navigation is ReleasedInvoicesNav
        EditedInvoices is a Pane
            span 4 columns
            business class is BillingInvoice
                list is EditedInvoicesList
                    overview navigation is EditedInvoicesNav
        PrintedInvoices is a Pane
            span 4 columns
            business class is BillingInvoice
                list is PrintedInvoicesList
                    overview navigation is PrintedInvoicesNav
        OnHoldInvoices is a Pane
            span 4 columns
            business class is BillingInvoice
                list is OnHoldInvoicesCard
                    overview navigation is OnHoldInvoiceNav
        PendingInvoicing is a Pane
            span 4 columns
            visible when (actor.context.FinanceEnterpriseGroup.CustomerOrdersExist)
            business class is CustomerOrder
                list is OrdersShippedNotInvoicedList
                    overview navigation is OrdersShippedNotInvoicedNav
        PendingShipment is a Pane
            span 4 columns
            visible when (actor.context.FinanceEnterpriseGroup.CustomerOrdersExist)
            business class is CustomerOrder
                list is OrdersReleasedNotShippedList
                    overview navigation is OrdersReleasedNotShippedNav

    JournalizeResults is a Panel
        business class is JournalizeGroupResult
            list is JournalizeGroupResults

