RecallNoticeMenuPage is a Page
    title is "RecallNotices"
    implements MenuSearch

    Pending is a Panel
        business class is RecallNotice
            list is PendingRecallNotices

    WithTransactions is a Panel
        business class is RecallNotice
            list is NoticesWithTransactions

    Active is a MultiPanePanel
        pane 1
            business class is RecallNotice
                list is ActiveRecallNotices
                Context
                    RecallGroup
        pane 3
            business class is pane 1.RecallNoticeTaskStatus set
                list is RecallNoticeTaskStatus
        pane 4
            business class is pane 3.RecallNoticeTaskRel
                list is RecallNoticeTaskChartList

    Search is a Panel
        business class is RecallNotice
            list is RecallNoticeSearch

    CreateAndSearch is a DashBoardPanel
        use 12 column grid
        Create is a Pane
            span 6 columns
            title is "Create"
            Layout
                two column
                    small menu
                        action is RecallNotice.Pending.Create
                            title is "Create"
                            menu item name is CreateNotice
                            icon is icon.document-certified-amethyst
                        action is RecallNotice.CopyNotice
                            title is "Copy"
                            menu item name is CopyNotice
                            icon is icon.document-certified-amethyst
                        action is RecallNotice.Pending.RecallPortalCreate
                            title is "ReportARecall"
                            menu item name is ReportARecall
                            icon is icon.document-certified-amethyst
                        list is RecallRSS.RecallRSSList
                            title is "FromFDA"
                            menu item name is CreateFromFDA
                            icon is icon.document-certified-amethyst
                        action is RecallGroup.RetrieveNRACRecalls
                            title is "RetrieveFromNRAC"
                            menu item name is RetrieveNRACNotices
                            icon is icon.document-certified-amethyst
        Search is a Pane
            span 3 columns
            title is "Search"
            Layout
                single column
                    small menu
                        list is RecallProduct.RecallProductSearch
                            title is "Products"
                            menu item name is SearchProducts
                            icon is icon.search-amber
                        list is RecallProductItem.RecallProductItemSearch
                            title is "Items"
                            menu item name is SearchItems
                            icon is icon.search-amber
                        list is RecallNoticeTask.TaskSearch
                            title is "Tasks"
                            menu item name is SearchTasks
                            icon is icon.search-amber
                        list is RecallNoticeQandA.NoticeQAndAList
                            title is "QandA"
                            menu item name is NoticeQAndA
                            icon is icon.search-amber
                            Search Terms
                                    "NoticeQAndA"
        Lists is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        page is RecallNoticePage.NoticeUpdates
                            title is "Updates"
                            menu item name is NoticeUpdates
                            description is "NoticesWhichAreUpdatesOfOtherNotices"
                            icon is icon.clipboard-check-emerald
                        page is RecallNoticePage.StatusAnalysis
                            title is "StatusAnalysis"
                            menu item name is NoticeStatusAnalysis
                            icon is icon.clipboard-check-emerald
                        page is RecallNoticePage.HistoricalNotices
                            title is "Historical"
                            menu item name is HistoricalNotices
                            icon is icon.clipboard-check-emerald
                        page is RecallNoticePage.NoticesWithNoTransactions
                            title is "NoTransactions"
                            menu item name is NoticesWithNoTransactions
                            description is "NoticesWhereNoTransactionsFoundAfterRunningProductTransactionQuery"
                            icon is icon.clipboard-check-emerald
                        list is RecallNotice.MyReportedRecallPortalNotices
                            title is "ReportedByMe"
                            menu item name is NoticesReportedByMe
                            icon is icon.clipboard-check-emerald

