UX1ReceivablesAnalysisPage is a Page
    title is "Analysis"
    implements MenuSearch

    Dashboard is a Panel
        title is "Dashboard"
        Search Terms
                "CompanyCustomerDashboard"
                "AnalysisDashboard"
                "CustomerAnalysis"
        business class is CompanyCustomer
            list is CustomerDashboards
                title is "Dashboard"

    CustomerAnalysis is a MultiPanePanel
        title is "CustomerList"
        Search Terms
                "CustomerAnalysis"
                "CompanyCustomerAnalysis"
        pane 1
            business class is CompanyCustomer
                list is CustomerAnalysisList
        pane 2
            business class is CompanyCustomer
                list is NationalAccountAnalysisList

    Reports is a DashBoardPanel
        title is "RunReports"
        use 12 column grid
        Aging is a Pane
            span 6 columns
            Layout
                two column distributed
                    large menu
                        action is CompanyAgingReport.CompanyAgingReport
                            title is "Company"
                            menu item name is Company
                            description is "Age_invoices_and_payments_by_company,_as_of_a_specified_date."
                            icon is icon.book-azure
                            Search Terms
                                    "CompanyAging"
                                    "AgeByCompany"
                        action is CustomerAgingReport.CustomerAgingReport
                            title is "Customer"
                            menu item name is Customer
                            description is "Age_invoices_and_payments_by_customer,_as_of_a_specified_date."
                            icon is icon.person-time-azure
                            Search Terms
                                    "CustomerAging"
                                    "AgeByCustomer"
                        action is ARCustomerProjectAgingReport.ARCustomerProjectAgingReport
                            title is "Project"
                            menu item name is Project
                            description is "Age_invoices_and_payments_by_project,_as_of_a_specified_date."
                            icon is icon.presentation-azure
                            Search Terms
                                    "ProjectAging"
                                    "AgeByProject"
                        action is ReportGroupAgingReport.ReportGroupAgingReport
                            title is "ReportGroup"
                            menu item name is ReportGroup
                            description is "Age_invoices_and_payments_by_process_level_report_group,_as_of_a_specified_date."
                            icon is icon.documents-azure
                            Search Terms
                                    "ReportGroupAging"
                                    "AgeByReportGroup"
                        action is NationalAccountAgingReport.NationalAccountAgingReport
                            title is "NationalAccount"
                            menu item name is NationalAccount
                            description is "Age_invoices_and_payments_by_national_account,_as_of_a_specified_date."
                            icon is icon.group-azure
                            Search Terms
                                    "NationalAccountAging"
                                    "AgeByNationalAccount"
                        action is SummaryAgingReport.SummaryAgingReport
                            title is "Summary"
                            menu item name is Summary
                            description is "Age_invoices_and_payments_in_summary,_as_of_a_specified_date."
                            icon is icon.document-finance-azure
                            Search Terms
                                    "SummaryAging"
                                    "AgeBySummary"
                                    "AgeInSummary"
        CustomerReports is a Pane
            span 6 columns
            title is "Customer"
            Layout
                two column distributed
                    large menu
                        action is CreditExceptionReport.CreditExceptionReport
                            title is "CreditException"
                            menu item name is CreditException
                            description is "Customers_exceeding_their_credit_limit,_or_with_transactions_a_number_of_days_past_due."
                            icon is icon.clipboard-check-emerald
                        action is CriticalReviewReport.CriticalReviewReport
                            title is "CriticalReview"
                            menu item name is CriticalReview
                            description is "Customers_to_review_based_on_specified_criteria."
                            icon is icon.clipboard-list-emerald
                        action is CustomerCreditAlert.CustomerCreditAlert
                            title is "CreditAlert"
                            menu item name is CreditAlert
                            description is "Customers_with_a_current_balance_plus_open_order_amount_greater_than_their_credit_limit."
                            icon is icon.person-search-emerald
                        action is CustomerStatisticReport.CustomerStatisticReport
                            title is "Statistics"
                            menu item name is Statistics
                            description is "Customer_statistics_based_on_specified_criteria."
                            icon is icon.chart-stacked-bar-emerald
                        action is CustomerGrandLivre.CustomerGrandLivre
                            title is "GrandLivre"
                            menu item name is GrandLivre
                            description is "Customer_transactions_and_balances_by_account_number_for_one_or_more_accounting_periods."
                            icon is icon.book-emerald
        TransactionReports is a Pane
            span 6 columns
            title is "Transaction"
            Layout
                two column distributed
                    column1
                        large menu
                            action is TransferredTransactionReport.TransferredTransactionReport
                                title is "TransferredTransactions"
                                menu item name is TransferredTransactions
                                description is "Invoices_and_payments_that_were_transferred,_with_an_optionally_specified_date_range."
                                icon is icon.compare-amethyst
                            action is ProjectReport.ProjectReport
                                title is "Project"
                                menu item name is Project
                                description is "Transactions_by_selected_projects_for_a_specified_range_of_global_ledger_dates."
                                icon is icon.presentation-amethyst
                            action is AdjustmentMaintenanceReport.AdjustmentMaintenanceReport
                                title is "AdjustmentMaintenance"
                                menu item name is AdjustmentMaintenance
                                description is "Adjustments_by_company_or_company_group,_with_an_optionally_specified_date_range."
                                icon is icon.clipboard-check-amethyst
                    column2
                        large menu
                            action is ReceivablesTransactionHistoryReport.ReceivablesTransactionHistoryReport
                                title is "TransactionHistory"
                                menu item name is TransactionHistory
                                description is "Transactions_by_company_or_company_group_for_a_specified_range_of_global_ledger_dates."
                                icon is icon.book-amethyst
                            action is ProjectHistoryReport.ProjectHistoryReport
                                title is "ProjectHistory"
                                menu item name is ProjectHistory
                                description is "Transactions_by_project_for_a_specified_range_of_global_ledger_dates."
                                icon is icon.document-amethyst
                            action is AdjustmentsByPeriodReport.AdjustmentsByPeriodReport
                                title is "AdjustmentsByPeriod"
                                menu item name is AdjustmentsByPeriod
                                description is "Adjustments_by_company_or_company_group_for_a_specified_period."
                                icon is icon.calendar-variant-amethyst
        AdditionalReports is a Pane
            span 6 columns
            title is "Additional"
            Layout
                two column distributed
                    large menu
                        action is CashForecastingReport.CashForecastingReport
                            title is "CashForecasting"
                            menu item name is CashForecasting
                            description is "Project_incoming_cash_based_on_outstanding_open_items."
                            icon is icon.cash-amber
                        action is ReceivablesTieBackReport.ReceivablesTieBackReport
                            title is "TieBack"
                            menu item name is TieBack
                            description is "Open_receivables_by_global_ledger_account."
                            icon is icon.document-finance-amber
                        action is RegulatoryForeignInvoices.RegulatoryForeignInvoices
                            title is "RegulatoryForeignInvoices"
                            menu item name is RegulatoryForeignInvoices
                            description is "Sales_to_foreign_countries."
                            icon is icon.document-certified-amber
                        list is ReceivableCompany.CompanyWithVoucherReferenceList
                            title is "VoucherReference"
                            menu item name is VoucherReference
                            description is "Assign_a_voucher_number_to_invoices_that_have_been_ordered_for_a_selected_company_and_year."
                            icon is icon.clipboard-list-amber
                        list is FutureApplicationReportHeader.FutureApplicationHeaderList
                            title is "FutureApplication"
                            menu item name is FutureApplication
                            description is "Applications_before_a_specified_date,_with_the_invoice_date_coming_afterwards."
                            icon is icon.calendar-variant-amber
                            Search Terms
                                    "FutureDatedApplication"
                                    "FutureDatedApplications"

    ApplicationAdjustments is a Panel
        business class is ReceivableApplicationAdjustment
            list is ApplicationAdjustmentss

    InvoicesPaidLate is a Panel
        business class is ReceivableApplication
            list is InvoicesPaidLate

    Distributions is a Panel
        Search Terms
                "ReceivableDistributions"
                "ARDist"
                "ARDistrib"
                "ARDistributions"
                "ReceivableGLDistributions"
        business class is ReceivableGLDistribution
            list is ReceivableGLDistributionAnalysisList

    ProjectAging is a Panel
        business class is CustomerGroup
            list is ProjectAgingList

    Ratios is a DashBoardPanel
        title is "Ratios"
        use 12 column grid
        Prerequisites is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        action is ReceivableActivitySummary.ReceivableActivitySummary
                            title is "ReceivableActivitySummary"
                            menu item name is ReceivableActivitySummary
                            description is "Updates_customer_aging_balances._Run_this_program_to_update_data_for_delinquency_ratio."
                            icon is icon.cycle-azure
                            Search Terms
                                    "ActivitySummary"
                        action is CompanyPeriodTotal.RefreshData
                            title is "RefreshColumnarData"
                            menu item name is RefreshData
                            description is "Updates_data_within_the_Accounts_Receivables_replication_set._Last_Refreshed_on_<actor.context.FinanceEnterpriseGroup.FSMColumnarARSTRel.LastRefreshStamp>"
                            icon is icon.outline-process-azure
        DaysSalesOutstanding is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        list is CompanyPeriodTotal.DSOList
                            title is "DaysSalesOutstanding"
                            menu item name is DaysSalesOutstanding
                            description is "Average_days_to_collect_Accounts_Receivable."
                            icon is icon.window-time-charts-emerald
                    header3 of "Formula:"
                    header5 of "DSO_=_(Average_AR_/_NetSales)_*_Number_of_days_between_1st_period_to_nth_period"
                    header5 of "Average_AR_=_(Opening_AR_of_the_1st_period_+_Closing_AR_of_nth_period_)/2"
                    header5 of "NetSales_=_Net_sales_from_1st_period_to_nth_period"
        WriteOffRatio is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        list is CompanyPeriodTotal.WORList
                            title is "WriteOffRatio"
                            menu item name is WriteOffRatio
                            description is "Percent_of_write_offs_compared_to_net_sales."
                            icon is icon.window-value-charts-emerald
                    header3 of "Formula:"
                    header5 of "WriteOffRatio_=_(Writeoff_/_NetSales)_*_100"
                    header5 of "Writeoff_=_Writeoff_from_1st_period_to_nth_period"
                    header5 of "NetSales_=_Net_sales_from_1st_period_to_nth_period"
        Delinquency is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        list is CompanyCustomer.DelinquencyList
                            title is "Delinquency"
                            menu item name is Delinquency
                            description is "Percent_of_Account_Receivables_that_are_past_due."
                            icon is icon.window-value-charts-emerald
                    header3 of "Formula:"
                    header5 of "Delinquency_=_(PastDue_/_TotalDue)_*_100"

