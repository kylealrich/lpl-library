ConfigurationChangeManagementPage is a Page
    title is "ChangeManagement"
    implements MenuSearch

    Tags is a Panel
        Search Terms
                "Configurations"
        business class is ConfigurationTag
            list is ConsoleList

    Bundles is a Panel
        Search Terms
                "Configurations"
        business class is ConfigBundleDefinition
            list is ConsoleList

    LocalSnapshots is a Panel
        Search Terms
                "Snapshots"
        business class is ConfigBundleSnapshot
            list is ExportConsoleList

    ImportedSnapshots is a Panel
        Search Terms
                "Snapshots"
        business class is ConfigBundleSnapshot
            list is ImportConsoleList

    AppliedSnapshots is a Panel
        Search Terms
                "Snapshots"
        business class is ConfigBundleSnapshot
            list is AppliedConsoleList

    Create is a Panel
        Layout
            single column
                large menu
                    action is ConfigurationTag.Create
                        title is "CreateTag"
                        menu item name is ConfigurationTagCreate
                        description is "Create and use Tags to group changes for both efficient project tracking and for use in Bundles to export to other systems."
                        icon is icon.reportTurquoiseOutline
                    action is ConfigBundleDefinition.Create
                        title is "CreateBundle"
                        menu item name is ConfigBundleDefinitionCreate
                        description is "A Bundle is a named definition which specifies one or many Tags. Bundles are dynamic and referential to the associated configuration changes. They are not locked or captured at a point in time with the Bundle."
                        icon is icon.listEmeraldOutline
                large menu
                    page is ConfigMasterBundlePage.Bundles
                        title is "CreateSnapshot"
                        menu item name is ConfigBundleSnapshotCreate
                        description is "A Snapshot is a full copy of the configurations, as defined by the source Bundle definition, at the point in time the Snapshot is created. Snapshots are static copies of the LPL and are locked for export or review only."
                        icon is icon.frameworkGenericForm
                large menu
                    action is ConfigBundleSnapshot.CreateSystemSnapshot
                        title is "CreateSystemSnapshot"
                        menu item name is ConfigBundleSnapshotCreateSystemSnapshot
                        description is "Take a Snapshot of all your configurations, personalizations, and security classes. Use to compare one system's configurations against another system's configurations."
                        icon is icon.frameworkGenericForm

