OrderEntryPageUX1 is a Page
    title is "Orders"
    implements MenuSearch

    OrderEntry is a DashBoardPanel
        title is "Main"
        use 12 column grid
        Order is a Pane
            span 6 columns
            title is "_"
            LinkBoxLayout
                dual width link
                    list is CustomerOrder.primary
                        title is "Orders"
                        menu item name is CustomerOrder
                        icon is icon.shopping-cart-azure
                dual width link
                    list is CustomerOrderReturn.primary
                        title is "Returns"
                        menu item name is CustomerOrderReturns
                        icon is icon.recall-azure
        DailyShipmentsJournal is a Pane
            span 6 columns
            title is "_"
            LinkBoxLayout
                dual width link
                    action is OrderEntryDailyShipmentJournal.OrderEntryDailyShipmentJournal
                        title is "DailyShipmentsJournal"
                        menu item name is DailyShipmentJournal
                        icon is icon.window-box-azure
                dual width link
                    list is CustomerShipTo.CustomerShipToList
                        title is "ShipToLocations"
                        menu item name is ShipToLocations
                        icon is icon.outline-link-azure
        OrderEntry is a Pane
            span 3 columns
            icon is icon.outline-star-azure
            Layout
                single column
                    list is ProformaInvoice.COProformaInvoiceList
                        title is "ProformaInvoices"
                        menu item name is ProformaInvoices
                    list is CustomerOrderLineMassChange.primary
                        title is "CustomerOrderLineMassChange"
                        menu item name is CustomerOrderLineMassChange
                    list is CustomerOrder.OrderEntryOpenOrdersList
                        title is "OpenOrders"
                        menu item name is OpenOrders
                    list is CustomerOrder.OrderEntryCancellationReport
                        title is "CancelledOrders"
                        menu item name is CancelledCustomerOrders
                    list is CustomerOrder.CashDownPaymentsByCustomer
                        title is "CashDownPaymentsByCustomer"
                        menu item name is CashDownPaymentsByCustomer
        OrderProcess is a Pane
            span 3 columns
            title is "Processing"
            icon is icon.warning-azure
            Layout
                two column distributed
                    small menu
                        action is OrderEntryBatchOrderRelease.OrderEntryBatchOrderRelease
                            title is "BatchReleaseOrders"
                            menu item name is BatchReleaseOrders
                        action is OrderEntryAcknowledgementPrintReport.OrderEntryAcknowledgementPrintReport
                            title is "PrintAcknowledgementReports"
                            menu item name is PrintAcknowledgementReport
                        action is OrderEntryQuotationListingAndDelete.OrderEntryQuotationListingAndDelete
                            title is "QuotationsListingAndDelete"
                            menu item name is QuotationListingAndDelete
                        action is OrderEntryShipImmediates.OrderEntryShipImmediates
                            title is "ShipImmediates"
                            menu item name is ShipImmediates
                        action is OrderEntryLineMassChangeUpdate.OrderEntryLineMassChangeUpdate
                            title is "UpdateLines"
                            menu item name is UpdateLines
                        action is OrderEntryReturnsGlobalLedgerPosting.OrderEntryReturnsGlobalLedgerPosting
                            title is "ReturnsGlobalLedgerPosting"
                            menu item name is ReturnsGlobalLedgerPosting
        Reports is a Pane
            span 3 columns
            icon is icon.outline-list-azure
            Layout
                two column distributed
                    small menu
                        action is OrderEntryIntercompanyShippingInvoice.OrderEntryIntercompanyShippingInvoice
                            title is "IntercompanyShippingInvoice"
                            menu item name is IntercompanyShippingInvoice
                        action is OrderEntryPriceOverrides.OrderEntryPriceOverrides
                            title is "PriceOverrides"
                            menu item name is PriceOverrides
                        action is OrderEntryCreditSalesReport.OrderEntryCreditSalesReport
                            title is "CreditSalesReport"
                            menu item name is CreditSalesReport

    All is a Panel
        business class is CustomerOrder
            list is CustomerOrderAndLineList

    OnHold is a Panel
        business class is CustomerOrder
            list is OrdersOnHoldReport

    Returned is a Panel
        business class is CustomerOrderReturn
            list is CustomerOrderReturnList

    Open is a Panel
        business class is CustomerOrder
            list is OrderEntryOpenOrdersList

    Cancelled is a Panel
        business class is CustomerOrder
            list is OrderEntryCancellationReport

    Journals is a Panel
        business class is JournalizeGroupResult
            list is OEJournalizedGroupResults

    Actions
        action is CustomerOrder.Unreleased.Create
            label is "CreateOrder"
        action is refresh
            label is "_"
