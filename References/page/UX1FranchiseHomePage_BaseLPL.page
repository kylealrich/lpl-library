UX1FranchiseHomePage is a Page
    title is "Overview"
    implements MenuSearch

    Dashboard is a DashBoardPanel
        use 12 column grid
        QuickLinks is a Pane
            span 6 columns
            Layout
                two column distributed
                    large menu
                        list is FranchiseSalesImport.FranchiseSalesImportNewList
                            title is "SalesImports"
                            menu item name is SalesImport
                            description is "Manage sales imports"
                            icon is icon.document-amber
                        action is FranchiseSalesInterface.FranchiseSalesInterface
                            title is "SalesInterface"
                            menu item name is SalesInterface
                            description is "Interface imported sales"
                            icon is icon.document-amethyst
                        action is SalesUpdate.SalesUpdate
                            title is "SalesUpdate"
                            menu item name is SalesUpdate
                            description is "Create actuals from accumulated aggregate sales"
                            icon is icon.document-amethyst
                        list is FranchiseContract.FranchiseContractNewList
                            title is "Contracts"
                            menu item name is Contracts
                            description is "Manage customer contracts"
                            icon is icon.document-certified-ruby
                        action is ReleasedActualSalesReport.ReleasedActualSalesReport
                            title is "ReleaseActualSales"
                            menu item name is ReleaseActualSales
                            description is "Unreleased actuals and call in estimates will be released"
                            icon is icon.document-emerald
                        action is InvoiceInterface.InvoiceInterface
                            title is "InvoiceInterface"
                            menu item name is InvoiceInterface
                            description is "Interface actuals to billing"
                            icon is icon.document-azure
        ContractsExpiringIn180Days is a Pane
            span 6 columns
            business class is FranchiseContract
                list is ContractsExpiringIn180DaysCardList
                    overview navigation is ContractsExpiringIn180DaysNav
        UnreleasedActualSales is a Pane
            span 6 columns
            business class is FranchiseSales
                list is UnreleasedActualSales
                    overview navigation is UnreleasedActualSalesNav
        UnreleasedAdjustedActualSales is a Pane
            span 6 columns
            business class is FranchiseSales
                list is UnreleasedAdjustedActualSales
                    overview navigation is UnreleasedAdjustedActualSalesNav

