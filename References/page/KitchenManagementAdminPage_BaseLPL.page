KitchenManagementAdminPage is a Page
    title is "Administration"
    implements MenuSearch

    Dashboard is a DashBoardPanel
        title is "Dashboard"
        use 12 column grid
        Setup is a Pane
            span 4 columns
            Layout
                single column
                    large menu
                        page is KitchenOrdersRecipePage.RecipeUnitsOfMeasure
                            title is "RecipeUnitsOfMeasure"
                            menu item name is RecipeUnitsOfMeasure
                            icon is icon.createContract
                        page is KitchenOrdersRecipePage.RecipeItems
                            title is "RecipeItems"
                            menu item name is RecipeItems
                            icon is icon.directory-azure
                        page is KitchenOrdersRecipePage.IngredientItems
                            title is "IngredientItems"
                            menu item name is IngredientItems
                            icon is icon.compare-azure
                        page is KitchenOrdersRecipePage.KitchenLocations
                            title is "KitchenLocations"
                            menu item name is KitchenLocations
                            icon is icon.home-azure
        DocumentTemplateSetup is a Pane
            span 4 columns
            title is "DocumentsAndPrinters"
            Layout
                single column
                    large menu
                        page is KitchenOrdersDocumentTempletePage.DocumentTemplatesForRecipe
                            title is "SampleDocumentTemplates"
                            menu item name is DocumentTemplatesForRecipe
                            icon is icon.document-amethyst
                        page is KitchenOrdersDocumentTempletePage.RecipeManagementIDMTemplates
                            title is "IDMTemplates"
                            menu item name is RecipeManagementIDMTemplates
                            icon is icon.documents-amethyst
                        page is IDMPrinterPage
                            title is "IDMPrinter"
                            menu item name is IDMPrinter
                            icon is icon.document-amethyst
                        page is MyIDMJobsPage
                            title is "IDMJobs"
                            menu item name is IDMJobs
                            icon is icon.document-amethyst

