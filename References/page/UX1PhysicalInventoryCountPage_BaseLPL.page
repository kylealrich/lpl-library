UX1PhysicalInventoryCountPage is a Page
    title is "PhysicalInventory"
    implements MenuSearch

    CountDashboard is a DashBoardPanel
        title is "Main"
        use 12 column grid
        CountsMenu is a Pane
            span 12 columns
            title is "Actions"
            Layout
                three column distributed
                    column1
                        large menu
                            action is InventoryCompany.FreezeSelectedItems
                                title is "MassFreezeItems"
                                menu item name is MassFreezeItems
                                description is "Generate_a_freeze_file_for_current_item_stock_quantities"
                                icon is icon.outline-folder-azure
                            action is PhysicalInventoryFreeze.DeleteFreezeRecords
                                title is "DeleteFreezeRecords"
                                menu item name is DeleteFreezeRecords
                                description is "Delete_freeze_records_created_for_a_select_ID"
                                icon is icon.outline-list-azure
                    column2
                        large menu
                            action is PhysicalInventoryInterface.InterfacePhysicalInventoryCounts
                                title is "UpdateFreezeCountsFromInterface"
                                menu item name is UpdateFreezeCountsFromInterface
                                description is "Process_Physical_Inventory_Counts_from_an_interface_file"
                                icon is icon.outline-interface-azure
                            action is InventoryCountControlStatus.InventoryCountControlStatus
                                title is "CountControlStatus"
                                menu item name is CountControlStatus
                                description is "Generate_report_of_Items_that_have_not_been_counted"
                                icon is icon.outline-checklist-azure
                    column3
                        large menu
                            action is InventoryVariancesUpdate.InventoryVariancesUpdate
                                title is "VarianceUpdate"
                                menu item name is VarianceUpdate
                                description is "Update_Physical_Inventory_counts_and_print_Variance_report"
                                icon is icon.outline-report-azure

    ManageSelectID is a Panel
        title is "ManageSelectID\\s"
        business class is PhysicalInventorySelect
            list is PhysicalInventorySelectIDs
                title is "ManageSelectID\\s"

    CountsSheets is a Panel
        business class is InventoryControlResult
            list is CountSheets

    EnterCounts is a Panel
        business class is PhysicalInventorySelect
            list is SelectIDsToEnterCountsAgainst

    EnterVarianceReasons is a Panel
        business class is PhysicalInventorySelect
            list is SelectIDsToEnterVarianceReasonsAgainst

    MaintainPhysicalInventoryInterface is a Panel
        business class is PhysicalInventoryImport
            list is PhysicalInventoryImportList

    InventoryInterfaceResults is a Panel
        business class is PhysicalInventoryInterfaceResult
            list is PhysicalInventoryInterfaceResults

    ViewAccuracy is a Panel
        title is "Accuracy"
        business class is PhysicalInventoryAccuracy
            list is PhysicalInventoryAccuracy
                title is "Accuracy"

