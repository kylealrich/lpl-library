UX1BillingInterfacesPage is a Page
    title is "Interfaces"
    implements MenuSearch

    Import is a MultiPanePanel
        pane 1
            business class is BillingInvoiceImport
                list is InvoiceImportList
        pane 2
            business class is BillingInterfaceResult
                list is InvoiceInterfaceResults

    Interfaces is a DashBoardPanel
        use 12 column grid
        Interfaces is a Pane
            span 6 columns
            Layout
                two column distributed
                    column1
                        large menu
                            action is BillingInvoiceImport.InterfaceInvoices
                                title is "InterfaceInvoices"
                                menu item name is InterfaceInvoices
                                description is "Perform action to interface invoices into billing"
                                icon is icon.document-blank-amethyst
                            action is CreateRecurringInvoices.CreateRecurringInvoices
                                title is "CreateRecurringInvoices"
                                menu item name is CreateRecurringInvoices
                                description is "Interface recurring invoices into billing"
                                icon is icon.outline-process-ruby
                    column2
                        large menu
                            action is BillingInterface.BillingInterface
                                title is "BillingInterface"
                                menu item name is BillingInterface
                                description is "Run batch job to interface invoices into billing"
                                icon is icon.outline-process-emerald
        Import is a Pane
            span 6 columns
            Layout
                two column distributed
                    column1
                        large menu
                            action is ShipToLoad.ShipToLoad
                                title is "ShipTo"
                                menu item name is ShipTo
                                description is "Import ship to codes"
                                icon is icon.check-azure
                    column2
                        large menu
                            action is InvoiceLoad.InvoiceLoad
                                title is "Invoice"
                                menu item name is Invoice
                                description is "Import invoices into billing._Recommended to import global ledger updated invoices"
                                icon is icon.cycle-azure

