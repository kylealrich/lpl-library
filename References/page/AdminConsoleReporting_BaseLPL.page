AdminConsoleReporting is a Page
    title is "Reporting"
    implements MenuSearch

    ReportDefinition is a Panel
        title is "Definitions"
        business class is ReportDefinition
            list is ReportManagementList
                title is "Definitions"

    ReportCategories is a Panel
        title is "Categories"
        business class is ReportCategory
            list is ReportCategoryList
                title is "Categories"

    ReportDistributionGroups is a Panel
        title is "DistributionGroups"
        business class is ReportDistributionGroup
            list is ReportDistributionGroupDefaultList
                title is "DistributionGroups"

    ReportDistributionProfiles is a Panel
        title is "DistributionProfiles"
        business class is ReportDistributionProfile
            list is ReportDistributionProfileDefaultList
                title is "DistributionProfiles"

    Administration is a DashBoardPanel
        use 12 column grid
        Maintenance is a Pane
            span 4 columns
            icon is icon.building
            Layout
                single column
                    large menu
                        action is BuildReportDefinitions.Build
                            title is "RebuildReportDefinitions"
                            menu item name is PopulateReportDefinitions
                            description is "RebuildReportDefinitionsForDeliveredOrEmbeddedReports.ReportDefinitionIsTheDataSourceForthe_Report_Catalog."
                        list is UserFolder.AdminAllReportsList
                            title is "ManageEmbeddedReports"
                            menu item name is ManageEmbeddedReports
                            description is "Search,Reassign,Purge,orDeleteTheReportsUsersHaveCreated"
                        list is UserListView.AdminUserListView
                            title is "ManageSavedSearches"
                            menu item name is AdminUserListView
                            description is "ViewAndManageAllSavedSearchesUsersHaveCreated"
        Setup is a Pane
            span 4 columns
            icon is icon.travel-plan
            Layout
                single column
                    large menu
                        list is ActorGroup.ActorGroupHierarchyList
                            title is "ActorGroups"
                            menu item name is ActorGroups
                            description is "SetupAndMaintainYourActorGroupsAndWhichActorsBelongToThem"
                        list is RoleGroup.RoleGroupList
                            title is "RoleGroups"
                            menu item name is RoleGroups
                            description is "SetupAndMaintainRoleGroupsAndWhich_RolesAssociateToThem"
        PDFOutput is a Pane
            span 4 columns
            icon is icon.pdf-file
            Layout
                single column
                    small menu
                        form is PDFSetup.PDFSetupForm
                            title is "PDF_Setup"
                            menu item name is PDFSetup
                        list is ReportOptions.primary
                            title is "ReportExportOptions"
                            menu item name is ReportOptions
                        list is ReportFontLocale.primary
                            title is "ReportFontLocale"
                            menu item name is ReportFontLocale

