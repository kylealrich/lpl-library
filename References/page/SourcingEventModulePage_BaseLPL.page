SourcingEventModulePage is a Page
    title is "ManageEvents"
    implements MenuSearch

    CreateEventsFromRequisitions is a MultiPanePanel
        pane 1
            business class is PurchaseOrderInterface
                list is OpenRequisitions
        pane 2
            business class is SourcingEventWorksheet
                list is CreateEventFromRequisitions
                Context
                    Actor
        pane 4
            business class is SourcingEvent
                list is RequisitionDraftEvents
                Context
                    Company

    Draft is a Panel
        business class is SourcingEvent
            list is DraftEvents
            Context
                Company

    PendingOpen is a Panel
        business class is SourcingEvent
            list is PendingOpenEvents
            Context
                Company

    Open is a Panel
        business class is SourcingEvent
            list is OpenEvents
            Context
                Company

    PendingEvaluation is a Panel
        business class is SourcingEvent
            list is EventsPendingAward
            Context
                Company

    Search is a Panel
        business class is SourcingEvent
            list is EventSearchList

    Other is a DashBoardPanel
        use 12 column grid
        Create is a Pane
            span 6 columns
            title is "Create"
            Layout
                two column
                    small menu
                        action is SourcingEvent.Draft.Create
                            title is "Manually"
                            menu item name is Manually
                            icon is icon.document-certified-amethyst
                        page is SourcingEventModulePage.CreateEventsFromRequisitions
                            title is "FromRequisitions"
                            menu item name is EventFromRequisitions
                            icon is icon.document-certified-amethyst
                        action is SourcingEvent.Draft.CreateEventFromEvent
                            title is "FromAnotherEvent"
                            menu item name is EventFromEvent
                            icon is icon.document-certified-amethyst
                        action is SourcingEvent.Draft.CreateInternalEvent
                            title is "Internal"
                            menu item name is Internal
                            icon is icon.document-certified-amethyst
                        action is SourcingEvent.Draft.CreateEventFromEventTemplate
                            title is "FromATemplate"
                            menu item name is EventFromTemplate
                            icon is icon.document-certified-amethyst
                        action is SourcingEvent.Draft.CreateEventFromTemplateOverrideCompany
                            title is "FromATemplateWithCompanyOverride"
                            menu item name is EventFromTemplateOverride
                            icon is icon.document-certified-amethyst
                        action is SourcingEvent.Draft.CreateFromWizard
                            title is "FromAWizard"
                            menu item name is EventFromWizard
                            icon is icon.document-certified-amethyst
                        page is CreateEventsFromContractsPage
                            title is "FromContracts"
                            menu item name is EventsFromContracts
                            icon is icon.document-certified-amethyst
        OtherInformation is a Pane
            span 3 columns
            title is "OtherInformation"
            Layout
                single column
                    small menu
                        page is EventProcessingPage.RecentlyFinalized
                            title is "RecentlyFinalized"
                            menu item name is RecentlyFinalized
                            icon is icon.search-amber
                        page is EventProcessingPage.BidTabulations
                            title is "BidTabulations"
                            menu item name is BidTabulations
                            icon is icon.search-amber
                        action is SourcingGroup.NotifySuppliersOfUnsubmittedAndMissingResponses
                            title is "NotifySuppliersWithUnsubmittedResponses"
                            menu item name is NotifySuppliersOfUnsubmittedAndMissingResponses
                            icon is icon.check-amber
                        page is EventProcessingPage.StatusAnalysis
                            title is "ByStatus"
                            menu item name is EventsByStatus
                            icon is icon.search-amber
                        page is EventProcessingPage.EventBuyerWeighting
                            title is "EventBuyerWeighting"
                            menu item name is EventBuyerWeighting
                            icon is icon.search-amber

