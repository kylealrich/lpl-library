InventoryHomePage is a Page
    title is "InventoryManager"

    Dashboard is a DashBoardPanel
        use 12 column grid
        QuickLinks is a Pane
            span 3 columns
            Layout
                single column
                    small menu
                        page is ItemPage
                            title is "Items"
                            menu item name is Items
                            icon is icon.briefcase-ruby
                        page is ManageItemLocationPage
                            title is "ItemLocations"
                            menu item name is ItemLocations
                            icon is icon.directory-amethyst
                        page is StockOnHandPage
                            title is "InventoryInformation"
                            menu item name is InventoryInformation
                            icon is icon.document-bar-chart-emerald
                        page is InventoryTransactionsPage
                            title is "InventoryTransactions"
                            menu item name is InventoryTransactions
                            icon is icon.document-text-amber
                        page is InventoryJournalizePage
                            title is "Journalize"
                            menu item name is Journalize
                            icon is icon.document-pie-chart-azure
        UnreleasedInventoryTransactions is a Pane
            span 3 columns
            business class is InventoryTransaction
                list is UnreleasedInventoryTransactionCardList
                    overview navigation is UnreleasedInventoryTransactionsNav
        ItemsWithZeroStockOnHand is a Pane
            span 3 columns
            business class is ItemLocation
                list is ZeroStockOnHandItemsCardList
                    overview navigation is ZeroStockOnHandItemsNav
        Within10PercentOfReorderPoint is a Pane
            span 3 columns
            business class is ItemLocation
                list is ItemsWithin10PercentOfReorderPointCardList
                    overview navigation is ItemsWithinReorderPointNav
        DaysOnHandLessThan7Days is a Pane
            span 12 columns
            visible when (actor.context.FinanceEnterpriseGroup.DaysOnHandInUse)
            business class is ItemLocation
                list is DaysOnHandLessThan7DaysWidgetList
                    overview navigation is DaysOnHandLessThan7Days
        OpenPOLinesPastExpectedDeliveryDate is a Pane
            span 6 columns
            business class is PurchaseOrderLine
                list is POLinesOverdueReceiptsInventoryCardList
                    overview navigation is OverduePOLinesNav
        InventoryItemsPastRequestedDeliveryDate is a Pane
            span 6 columns
            business class is RequisitionLine
                list is ItemsPastRequestedDeliveryDateCardList
                    overview navigation is PastRequestedDeliveryDateNav
        ExpiringItems is a Pane
            span 6 columns
            title is "Expiring_andExpiredItems"
            business class is ItemLot
                list is ExpiringItemsCardList
                    overview navigation is ExpiringItemsNav

    ReorderStatus is a Panel
        title is "Items_to_Reorder"
        business class is ItemLocation
            list is ItemsWithin10PercentOfReorderPoint
                title is "Items_to_Reorder"

