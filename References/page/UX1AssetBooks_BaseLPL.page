UX1AssetBooks is a Page
    title is "AssetBooks"
    implements MenuSearch

    Books is a DashBoardPanel
        use 12 column grid
        ActionsPanel is a Pane
            span 12 columns
            title is "Actions"
            Layout
                five column
                    small menu
                        action is BookCopy.BookCopy
                            title is "CopyBook"
                            menu item name is BookCopy
                            icon is icon.documents-azure
                            Search Terms
                                    "BookCopy"
                        action is BookNameChange.BookNameChange
                            title is "ChangeBookName"
                            menu item name is BookNameChange
                            icon is icon.check-azure
                            Search Terms
                                    "BookNameChange"
        Books is a Pane
            span 12 columns
            title is "Books"
            business class is Book
                list is BookCardList

    CurrentBookCalendars is a Panel
        business class is BookCalendar
            list is CurrentBookCalendarList

    BookListing is a Panel
        business class is Book
            list is Books

    BookGroups is a Panel
        business class is BookGroup
            list is BookGroups

