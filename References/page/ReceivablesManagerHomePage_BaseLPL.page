ReceivablesManagerHomePage is a Page
    title is "ReceivablesManager"
    implements MenuSearch

    Dashboard is a DashBoardPanel
        use 12 column grid
        QuickLinks is a Pane
            span 3 columns
            Layout
                single column
                    small menu
                        page is ReceivableInvoicesPage
                            title is "Invoices"
                            menu item name is ManageReceivableInvoices
                            icon is icon.document-finance-ruby
                        page is ReceivablePaymentsPage
                            title is "Payments"
                            menu item name is ManageReceivablePayments
                            icon is icon.payment-emerald
                        page is ManageCustomersPage
                            title is "ManageCustomers"
                            menu item name is ManageCustomers
                            icon is icon.target-amethyst
                        page is ReceivablesAnalysisPage
                            title is "Analysis"
                            menu item name is ReceivablesAnalysis
                            icon is icon.chart-bar-amber
        UnreleasedPayments is a Pane
            span 3 columns
            business class is ReceivablePayment
                list is UnreleasedPaymentsCardList
                    overview navigation is UnreleasedPaymentsCardListNav
        OverdueInvoices is a Pane
            span 3 columns
            business class is ReceivableInvoiceDetail
                list is OverDueInvoicesCardList
                    overview navigation is OverdueInvoicesListNav
        UnresolvedDisputes is a Pane
            span 3 columns
            business class is ReceivableInvoiceDispute
                list is ReceivableOpenInvoiceDisputeCardList
                    overview navigation is ReceivableOpenInvoiceDisputeListNav
        OtherActions is a Pane
            span 3 columns
            Layout
                single column
                    small menu
                        action is CompanyAgingReport.CompanyAgingReport
                            title is "CompanyAgingReport"
                            menu item name is CompanyAgingReport
                            icon is icon.document-text-amber
                        action is CustomerAgingReport.CustomerAgingReport
                            title is "CustomerAgingReport"
                            menu item name is CustomerAgingReport
                            icon is icon.document-text-azure
                        action is CreditExceptionReport.CreditExceptionReport
                            title is "CreditExceptionReport"
                            menu item name is CreditExceptionReport
                            icon is icon.document-text-emerald
                        action is ReceivablesTieBackReport.ReceivablesTieBackReport
                            title is "TieBackReport"
                            menu item name is ReceivablesTieBackReport
                            icon is icon.document-text-amethyst
                        action is ApplicationCloseResult.PerformApplicationClose
                            title is "ApplicationClose"
                            menu item name is ReceivablesApplicationClose
                            icon is icon.book-amber
                        page is ReceivablesJournalizePage
                            title is "Journalize"
                            menu item name is ReceivablesJournalize
                            icon is icon.book-emerald
                        action is ReceivableActivitySummary.ReceivableActivitySummary
                            title is "ReceivableActivitySummary"
                            menu item name is ReceivableActivitySummary
                            icon is icon.document-azure
                        action is PeriodCloseReport.PeriodCloseReport
                            title is "PeriodCloseReport"
                            menu item name is ReceivablesPeriodCloseReport
                            icon is icon.document-text-ruby
        UnassignedCash is a Pane
            span 3 columns
            business class is ReceivablePayment
                list is UnassignedCashCardList
                    overview navigation is UnassignedCashListNav
        UnappliedCash is a Pane
            span 3 columns
            business class is ReceivablePayment
                list is UnappliedCashCardList
                    overview navigation is UnappliedCashListNav
        CustomerExceed is a Pane
            span 3 columns
            title is "CustomersExceededLimit"
            business class is CompanyCustomer
                list is CompanyCustomerLimitExceedCardList
                    overview navigation is CustomersExceededLimitNav
        UnreleasedRTM is a Pane
            span 3 columns
            business class is RTMPayment
                list is UnreleasedRTMPaymentCardList
                    overview navigation is UnreleasedRTMPaymentListNav
        UnappliedCredit is a Pane
            span 3 columns
            business class is ReceivableInvoiceDetail
                list is UnappliedCreditCardList
                    overview navigation is OpenCreditMemoListNav
        AdjustmentExceededReview is a Pane
            span 3 columns
            business class is ReceivableApplicationAdjustment
                list is AdjustmentExceedCardList
                    overview navigation is AdjustmentsExceededReviewListNav

