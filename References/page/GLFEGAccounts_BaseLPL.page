GLFEGAccounts is a Page
    title is "Accounts"

    Chart is a Panel
        title is "Charts"
        business class is ReportingChart
            list is ReportingChartsList
                title is "Charts"
            Context
                FinanceEnterpriseGroup

    PostingAccount is a Panel
        title is "<actor.context.FinanceEnterpriseGroup.AccountLabel>"
        business class is Account
            list is DetailAccountList
                title is "<actor.context.FinanceEnterpriseGroup.AccountLabel>"
            Context
                FinanceEnterpriseGroup

    SubAccount is a Panel
        title is "SubAccounts"
        visible when (actor.context.FinanceEnterpriseGroup.UseSubAccounts)
        business class is GeneralLedgerSubAccount
            list is GeneralLedgerSubAccountList
                title is "SubAccounts"
            Context
                FinanceEnterpriseGroup

    AccountSubType is a Panel
        business class is AccountSubType
            list is AccountSubTypeList
            Context
                FinanceEnterpriseGroup

