DistrictsUX1 is a Page
    title is "Districts"
    implements MenuSearch

    Main is a DashBoardPanel
        use 12 column grid
        ImportantLinks is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        page is DistrictSpace
                            title is "ManageDistricts"
                            menu item name is ManageDistricts
                            description is "View_and_maintain_district_information_including_schools,_activity_accounts,_account_codes_and_students."
                            icon is icon.outline-form-azure
                        page is StudentActivityJournalizePage
                            title is "Journalize"
                            menu item name is Journalize
                            description is "Use_this_to_journalize_student_activity_distributions."
                            icon is icon.outline-process-azure
                        page is DistrictActivityDetails
                            title is "SearchActivityDetails"
                            menu item name is SearchActivityDetails
                            description is "Use_when_you_want_to_search_for_activity_details."
                            icon is icon.search-azure
        ViewBalances is a Pane
            span 3 columns
            Layout
                single column
                    large menu
                        page is DistrictActivityBalances
                            title is "ByDistrict"
                            menu item name is ByDistrict
                            description is "View_and_track_balances_by_district."
                            icon is icon.window-time-charts-amethyst
                        page is SchoolActivityBalances
                            title is "BySchool"
                            menu item name is BySchool
                            description is "View_and_track_balances_by_school."
                            icon is icon.window-time-charts-amethyst

