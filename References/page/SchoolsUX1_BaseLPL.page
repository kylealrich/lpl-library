SchoolsUX1 is a Page
    title is "Schools"
    implements MenuSearch

    Main is a DashBoardPanel
        use 12 column grid
        ImportantLinks is a Pane
            span 6 columns
            Layout
                single column
                    large menu
                        page is SchoolSpace
                            title is "ManageSchools"
                            menu item name is ManageSchools
                            description is "View_and_maintain_school_information_including_bank_accounts,_school_activities_and_students."
                            icon is icon.outline-form-azure
                        page is SchoolActivityBalances
                            title is "ActivityBalances"
                            menu item name is ActivityBalances
                            description is "View_activity_balances_for_current_transactions_and_all_closed_period_balances_of_a_school."
                            icon is icon.outline-report-azure
                        page is StudentActivityJournalizePage
                            title is "Journalize"
                            menu item name is Journalize
                            description is "Use_this_to_journalize_student_activity_distributions."
                            icon is icon.outline-process-azure
        Processing is a Pane
            span 6 columns
            Layout
                two column distributed
                    column1
                        large menu
                            list is StudentActivityTransfer.StudentActivityTransferList
                                title is "ActivityTransfers"
                                menu item name is ActivityTransfers
                                description is "Create_an_activity_or_bank_account_transfer."
                                icon is icon.document-finance-emerald
                            list is StudentActivityBankTransaction.StudentActivityBankTransactionList
                                title is "BankTransactions"
                                menu item name is BankTransactions
                                description is "Create_an_adjustment,_bank_deposit,_disbursement,_returned_payments_or_transfer."
                                icon is icon.document-finance-emerald
                            list is StudentActivityBankAccount.BatchCheckProcessingList
                                title is "BatchCheckProcessing"
                                menu item name is BatchCheckProcessing
                                description is "Process_batch_check_printing_for_disbursement."
                                icon is icon.document-finance-emerald
                    column2
                        large menu
                            list is StudentActivityBankStatement.StudentActivityBankStatementList
                                title is "BankStatements"
                                menu item name is BankStatements
                                description is "Use_this_to_reconcile_bank_transactions_with_a_bank_statement_and_print_a_reconciliation_report."
                                icon is icon.document-finance-emerald
                            list is StudentActivityBankTransaction.ReportableIncomeDisbursementsList
                                title is "ReportableIncomeRecords"
                                menu item name is ReportableIncomeRecords
                                description is "View_reportable_income_disbursements."
                                icon is icon.outline-report-emerald

