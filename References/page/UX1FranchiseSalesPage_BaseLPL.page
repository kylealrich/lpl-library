UX1FranchiseSalesPage is a Page
    title is "Sales"
    implements MenuSearch

    Dashboard is a DashBoardPanel
        use 12 column grid
        Maintenance is a Pane
            span 12 columns
            Layout
                three column distributed
                    large menu
                        action is SalesUpdate.SalesUpdate
                            title is "SalesUpdate"
                            menu item name is SalesUpdate
                            description is "Create actuals from accumulated aggregate sales"
                            icon is icon.document-text-amethyst
                        action is ReleasedActualSalesReport.ReleasedActualSalesReport
                            title is "ReleaseActualSales"
                            menu item name is ReleaseActualSales
                            description is "Release unreleased actuals and call in estimates"
                            icon is icon.document-text-emerald
                        action is InvoiceInterface.InvoiceInterface
                            title is "InvoiceInterface"
                            menu item name is InvoiceInterface
                            description is "Interface actuals to billing"
                            icon is icon.document-text-azure
                        action is BudgetedSalesUpdate.BudgetedSalesUpdate
                            title is "BudgetedSalesUpdate"
                            menu item name is BudgetedSalesUpdate
                            description is "Update next year's budget amounts"
                            icon is icon.document-text-ruby
                        action is CreateEstimates.CreateEstimates
                            title is "CreateEstimates"
                            menu item name is CreateEstimates
                            description is "Create estimated sales"
                            icon is icon.document-text-amber
        UnreleasedActualSales is a Pane
            span 6 columns
            business class is FranchiseSales
                list is UnreleasedActualSales
                    overview navigation is UnreleasedActualSalesNav
        SalesByType is a Pane
            span 6 columns
            Layout
                two column distributed
                    large menu
                        page is UX1FranchiseSalesTypesPage.ActualSales
                            title is "ActualSales"
                            menu item name is ActualSales
                            description is "Manage actuals"
                            icon is icon.check-ruby
                        page is UX1FranchiseSalesTypesPage.CallInEstimates
                            title is "CallInEstimates"
                            menu item name is CallinEstimate
                            description is "Manage call in estimates"
                            icon is icon.check-ruby
                        page is UX1FranchiseSalesTypesPage.EstimatedInvoices
                            title is "EstimatedInvoices"
                            menu item name is EstimatedInvoices
                            description is "Manage estimated invoices"
                            icon is icon.check-ruby
                        page is UX1FranchiseSalesTypesPage.AggregateSales
                            title is "AggregateSales"
                            menu item name is AggregateSales
                            description is "Manage aggregates"
                            icon is icon.check-ruby
                        page is UX1FranchiseSalesTypesPage.OpenEstimateCallInSales
                            title is "OpenEstimateCallInSales"
                            menu item name is OpenEstimateCallInSales
                            description is "View released estimates and call in estimates"
                            icon is icon.check-ruby
                        page is UX1FranchiseSalesTypesPage.BudgetedSales
                            title is "BudgetedSales"
                            menu item name is BudgetedSales
                            description is "View actual sales with variances"
                            icon is icon.check-ruby

    AllSales is a Panel
        business class is FranchiseSales
            list is FranchiseSalesNewList

