SecurityReports is a Page
    title is "SecurityReports"

    SecurityDashboard is a DashBoardPanel
        title is "SecurityDashboard"
        use 12 column grid
        SecurityReportsActor is a Pane
            span 4 columns
            title is "Actor"
            icon is icon.agent
            Layout
                single column
                    large menu
                        page is ActorSecurityReports
                            title is "Actors"
                            menu item name is ActorSecurityReports
                            description is "Use_this_procedure_to_get_information_regarding_actor_role_association."
                    small menu
                        action is ScReport.RunCommand
                            title is "UserPermissions"
                            menu item name is UserPermissions
                    small menu
                        list is ActorOverviewReportsTracker.ActorOverviewReportsTrackerList
                            title is "ActorResponsibilityOverview"
                            menu item name is ActorOverviewReportsTrackerList
                    small menu
                        list is SecurityReport.WebAppAndContentEvaluationReportList
                            title is "WebAppAndContentEvaluationReportList"
                            menu item name is WebAppAndContentEvaluationReportList
        Analysis is a Pane
            span 4 columns
            title is "Analysis"
            icon is icon.line-chart
            Layout
                single column
                    small menu
                        page is SegregationOfDutiesPage
                            title is "SegregationOfDuties"
                            menu item name is SegregationOfDuties
                    small menu
                        page is SecurableObjectPage
                            title is "SecurableObject"
                            menu item name is SecurableObjectPage
                    small menu
                        page is SecurityPolicyChangeDetectionReport
                            title is "SecurityPolicyChangeDetectionReport"
                            menu item name is SecurityPolicyChangeDetectionReport
        SecurityInheritance is a Pane
            span 4 columns
            title is "SecurityInheritance"
            icon is icon.group
            Layout
                single column
                    small menu
                        list is SecurityReport.SecurityClassInheritanceReportList
                            title is "SecurityClassInheritanceReport"
                            menu item name is SecurityClassInheritanceReportList
                    small menu
                        list is SecurityReport.InheritanceSummaryList
                            title is "SecurityClassInheritanceSummaryReport"
                            menu item name is SecurityClassInheritanceSummaryReport

