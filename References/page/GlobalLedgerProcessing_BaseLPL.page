GlobalLedgerProcessing is a Page
    title is "Processing"
    implements MenuSearch

    GLProcessingDashboard is a DashBoardPanel
        title is "Transactions"
        use 12 column grid
        GLTransactionInterface is a Pane
            span 6 columns
            title is "ProcessTransactions"
            Layout
                two column distributed
                    large menu
                        page is GeneralLedgerTransactionInterfacePage
                            title is "TransactionInterface"
                            menu item name is TransactionInterface
                            description is "Manage_interface_run_groups"
                            icon is icon.document-finance-azure
                        action is InterfaceSelectedRunGroups.ScheduleInterface
                            title is "InterfaceSelectedRunGroups"
                            menu item name is InterfaceSelectedRunGroups
                            description is "Process_interfaced_records_for_selected_groups"
                            icon is icon.outline-process-azure
                        action is InterfaceAllRunGroups.ScheduleInterface
                            title is "InterfaceAllRunGroups"
                            menu item name is InterfaceAllRunGroups
                            description is "Process_interfaced_records_for_all_groups"
                            icon is icon.outline-process-azure
                        action is FinanceEnterpriseGroup.ResetAllErrorsForSelectedRunGroups
                            title is "Reset_allErrors"
                            menu item name is ResetAllErrors
                            description is "Reset_errors_for_run_groups"
                            icon is icon.outline-process-azure
                        visible when (actor.context.FinanceEnterpriseGroup.CurrencyTranslationAndRevalue)
                            page is ReportingBasisRevaluation
                                title is "Revaluation_andTranslation"
                                menu item name is RevaluationAndTranslation
                                description is "Process_to_create_revaluation_transactions_and_translation_transactions"
                                icon is icon.document-finance-azure
                        action is FinanceEnterpriseGroup.InterEntityNetting
                            title is "InterEntityNetting"
                            menu item name is InterEntityNetting
                            description is "Process_to_net_payable_and_receivable_balances"
                            icon is icon.outline-process-azure
                        visible when (actor.context.FinanceEnterpriseGroup.FundAccounting)
                            action is FinanceEnterpriseGroup.CreateCashOffsetsForSelectedRunGroups
                                title is "CashOffsets_forRunGroups"
                                menu item name is CashOffsetsForRunGroups
                                description is "CreateCashOffsets_for_selected_run_groups"
                                icon is icon.outline-process-azure
                        visible when (actor.context.FinanceEnterpriseGroup.ADBSelectionExists)
                            action is ProcessAverageDailyBalance.ProcessAverageDailyBalance
                                title is "RunAverageDailyBalance"
                                menu item name is RunAverageDailyBalance
                                description is "Calculates_the_daily_balances,_aggregate,_and_averages_on_selected_run_date"
                                icon is icon.outline-process-azure
        ProcessJournals is a Pane
            span 3 columns
            Layout
                single column
                    action is GeneralLedgerJournalControl.Unreleased.Create
                        title is "CreateJournal"
                        menu item name is CreateJournal
                        description is "Create_a_new_journal_entry"
                        icon is icon.outline-form-amber
                    action is PostJournals.SchedulePosting
                        title is "PostJournals"
                        menu item name is PostJournals
                        icon is icon.settings-amber
                    page is JournalPostingReport
                        title is "PostedJournals"
                        menu item name is PostedJournals
                        icon is icon.outline-form-amber
        ProcessingCodes is a Pane
            span 3 columns
            title is "General"
            Layout
                single column
                    list is GeneralLedgerAccountCode.GeneralLedgerAccountCodeList
                        title is "AccountCodes"
                        menu item name is AccountCodes
                        icon is icon.document-finance-emerald
                    visible when (actor.context.FinanceEnterpriseGroup.AccountingUnitLabelExists)
                        list is GeneralLedgerOrganizationCode.GeneralLedgerOrganizationCodeList
                            title is "OrganizationCodes"
                            menu item name is OrganizationCodes
                            icon is icon.document-finance-emerald
                    visible when (actor.context.FinanceEnterpriseGroup.LegacyGltransExists)
                        list is LegacyGltrans.LegacyGltransList
                            title is "LegacyTransactions"
                            menu item name is LegacyTransactions
                            icon is icon.document-finance-emerald
                    visible when (actor.context.FinanceEnterpriseGroup.ShowLegacyColumnar)
                        page is GLLegacyTransactionsPage
                            title is "LegacyColumnarTransactions"
                            menu item name is LegacyColumnarTransactions
                            icon is icon.document-finance-emerald

    GLPeriodCloseDashboard is a DashBoardPanel
        title is "Close"
        use 12 column grid
        PeriodClose is a Pane
            span 3 columns
            title is "PeriodClose"
            Layout
                single column
                    list is EntityLedgerPeriod.EntityLedgerPeriodList
                        title is "PeriodStatus"
                        menu item name is PeriodStatus
                        icon is icon.window-value-charts-azure
                    page is PeriodStatusByLedger
                        title is "PeriodStatus_byLedger"
                        menu item name is PeriodStatusByLedger
                        icon is icon.window-value-charts-azure
                    action is CloseLedgerPeriod.SchedulePeriodClose
                        title is "SchedulePeriodClose"
                        menu item name is SchedulePeriodClose
                        icon is icon.outline-process-azure
        PeriodCloseActions is a Pane
            span 3 columns
            title is "SystemClose"
            Layout
                single column
                    action is CloseRecurringJournalPeriod.ScheduleRecurringJournalPeriodClose
                        title is "RecurringJournal"
                        menu item name is RecurringJournal
                        icon is icon.window-box-emerald
                    list is RJPeriodCloseResult.RJPeriodCloseResultList
                        title is "RecurringJournalCloseResults"
                        menu item name is RecurringJournalCloseResults
                        icon is icon.document-emerald
                    action is CloseCostAllocationPeriod.ScheduleCostAllocationPeriodClose
                        title is "CostAllocation"
                        menu item name is CostAllocation
                        icon is icon.window-box-emerald
                    action is CloseGeneralLedgerSystemControl.ScheduleGLSystemControlClose
                        title is "GlobalLedger"
                        menu item name is GlobalLedger
                        icon is icon.window-box-emerald
                    visible when (actor.context.FinanceEnterpriseGroup.ProjectEntry)
                        action is CloseProjectLedgerSystemControl.SchedulePSSystemControlClose
                            title is "Project"
                            menu item name is Project
                            icon is icon.window-box-emerald
        ReportingBasisPane is a Pane
            span 3 columns
            title is "ReportingBasis"
            Layout
                single column
                    page is ReportingBasisCloseYear
                        title is "CloseYear"
                        menu item name is CloseYear
                        icon is icon.window-time-charts-amethyst
                    page is GainLossJournalReport
                        title is "GainLossJournalResults"
                        menu item name is GainLossJournalResults
                        icon is icon.window-time-charts-amethyst
                    page is ReportingBasisCloseReport
                        title is "CloseReport"
                        menu item name is CloseReport
                        icon is icon.window-time-charts-amethyst
                    page is ReportingBasisYearEndJournalReport
                        title is "YearEndJournalReports"
                        menu item name is YearEndJournalReports
                        icon is icon.window-time-charts-amethyst
        InterEntity is a Pane
            span 3 columns
            title is "ValidationReports"
            Layout
                single column
                    page is InterDepartmentReport
                        title is "DepartmentPayablesAndReceivables"
                        menu item name is DepartmentPayablesAndReceivables
                        icon is icon.window-grid-amber
                    page is InterEntityReport
                        title is "<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>PayablesAndReceivables"
                        menu item name is AccountingEntityPayablesAndReceivables
                        icon is icon.window-grid-amber
                    page is InterZoneReport
                        title is "ZonePayablesAndReceivablesBalances"
                        menu item name is ZonePayablesAndReceivablesBalances
                        icon is icon.window-grid-amber
                    action is UpdateZonePayablesAndReceivables.ScheduleUpdateZonePayablesAndReceivables
                        title is "UpdateZoneBalances"
                        menu item name is UpdateZoneBalances
                        icon is icon.outline-process-amber

