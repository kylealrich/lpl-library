ReplicationSetPage is a Page
    title is "Replication"
    implements MenuSearch

    Overview is a DashBoardPanel
        use 12 column grid
        ReplicationsInProcess is a Pane
            span 6 columns
            business class is ReplicationSet
                list is ReplicationInProcess
        UpcomingReplications is a Pane
            span 6 columns
            business class is ReplicationSet
                list is ReplicationPending
        ReplicationSetIssues is a Pane
            span 6 columns
            business class is ReplicationSet
                list is ReplicationRedAlertList
        BusinessClassIssues is a Pane
            span 6 columns
            business class is RepSetBC
                list is ReplicationClassIssuesDashboard
        ReplicationHistory is a Pane
            span 12 columns
            business class is ReplicationSetHistory
                list is ReplicationHistoryDescDashList
                    overview navigation is ViewHistory
                        label is "ViewAll"

    Maintain is a Panel
        business class is ReplicationSet
            list is ReplicationSetDetails

    Search is a Panel
        business class is ReplicationSet
            list is ReplicationSetSearchList

    ProcessingNow is a Panel
        business class is AsyncActionRequest
            list is AsyncActionRequestInProcessReplications

    Upcoming is a Panel
        business class is AsyncActionRequest
            list is AsyncActionRequestPendingReplications

    Failed is a Panel
        business class is AsyncActionTrigger
            list is FailedReplicationTriggerList

    IMSQueue is a Panel
        business class is IONOutboxQueue
            list is IMSQueuePanelList

    DataLakeQueue is a Panel
        business class is DataLakeQueue
            list is DataLakeBatchQueueList

    StreamingQueue is a Panel
        business class is DataLakeQueue
            list is DataLakeStreamingQueueList

    BusinessClassHistory is a Panel
        business class is RepSetBCHistory
            list is RepSetBCHistoryDescListWithClass

    BusinessClasses is a Panel
        business class is RepSetBC
            list is ReplicationClassSearch

