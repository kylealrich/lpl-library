BuyerHomePage is a Page
    title is "Buyer"

    Dashboard is a DashBoardPanel
        use 12 column grid
        QuickLinks is a Pane
            span 3 columns
            Layout
                single column
                    small menu
                        page is ManagePurchaseRequestPage
                            title is "PurchaseRequests"
                            menu item name is PurchaseRequests
                            icon is icon.target-amethyst
                        page is PurchaseOrderProcessingPage
                            title is "PurchaseOrders"
                            menu item name is PurchaseOrders
                            icon is icon.document-text-amber
                        page is PurchaseOrderReceiptProcessingPage
                            title is "Receiving"
                            menu item name is Receiving
                            icon is icon.receipt-emerald
                        page is ContractProcessingPage
                            title is "Contracts"
                            menu item name is Contracts
                            icon is icon.document-bar-chart-ruby
                        list is VendorReturn.VendorReturnList
                            title is "VendorReturns"
                            menu item name is VendorReturns
                            icon is icon.briefcase-azure
                        page is BuyerMessagePage
                            title is "ReviewMyMessages"
                            menu item name is ReviewMyMessages
                            icon is icon.toDoList
        NewRequests is a Pane
            span 3 columns
            Layout
                single column
                    small menu
                        action is Vendor.RequestNewVendor
                            title is "RequestVendor"
                            menu item name is RequestVendor
                            icon is icon.hcm-ruby
                        action is Item.RequestNewItem
                            title is "RequestItem"
                            menu item name is RequestItem
                            icon is icon.briefcase-amber
                        action is ItemLocation.RequestNewItemLocation
                            title is "RequestItemLocation"
                            menu item name is RequestItemLocation
                            icon is icon.homepages-azure
                        action is PayablesInvoice.RequestNewInvoicePayment
                            title is "RequestInvoicePayment"
                            menu item name is RequestInvoicePayment
                            icon is icon.receipt-emerald
        OpenPurchaseRequests is a Pane
            span 3 columns
            business class is PurchaseOrderInterface
                list is ManagePurchaseRequestCardList
                    overview navigation is ManagePurchaseRequestNav
        UnreleasedPurchaseOrders is a Pane
            span 3 columns
            business class is PurchaseOrder
                list is UnreleasedPurchaseOrdersCardList
                    overview navigation is UnreleasedPurchaseOrderNav
        UnapprovedPurchaseOrders is a Pane
            span 3 columns
            business class is PurchaseOrder
                list is UnapprovedPurchaseOrdersCardList
                    overview navigation is UnapprovedPurchaseOrdersNav
        PastDeliveryDate is a Pane
            span 3 columns
            business class is PurchaseOrderLine
                list is MyOpenPOLinesToReceiveCardList
                    overview navigation is MyOpenPOLinesToReceiveNav
        UnreleasedBuyerMessages is a Pane
            span 3 columns
            business class is PurchaseOrderBuyerMessage
                list is MyUnreleasedBuyerMessagesCardList
                    overview navigation is MyUnreleasedBuyerMessagesNav
        VendorReturns is a Pane
            span 3 columns
            business class is VendorReturn
                list is VendorReturnCardList
                    overview navigation is VendorReturnNav
        OpenInvoiceMessages is a Pane
            span 3 columns
            business class is MatchInvoiceMessage
                list is MyOpenInvoiceMessagesCardList
                    overview navigation is MyOpenInvoiceMessagesNav
        AcknowledgementsNeedingResponse is a Pane
            span 3 columns
            business class is SupplierMessageDialog
                list is DialogNeedingResponsesCardList
                    overview navigation is DialogResponsesNav
        AcknowledgementMessagesNeedingAction is a Pane
            span 6 columns
            business class is PurchaseOrderAcknowledgementMessage
                list is POAcknowledgementMessagesForABuyerCardList
                    overview navigation is POAcknowledgementMessagesForABuyerNav

    PurchaseOrdersToCreate is a Panel
        business class is PurchaseOrderInterface
            list is MyItemsNeedingPOs

    AutoMatchResults is a Panel
        business class is AutoMatchResult
            list is BuyerAutoMatchResults

