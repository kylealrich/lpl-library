                            icon is icon.document-text-ruby
                        list is BillingInvoiceImport.primary
                            title is "InvoiceImports"
                            menu item name is InvoiceImports
                            icon is icon.createContract
                        list is RecurringInvoiceParameter.RecurringInvoices
                            title is "RecurringInvoiceDefinitions"
                            menu item name is RecurringInvoiceDefinitions
                            icon is icon.requestActionsIcon
                        list is CustomerRecurringInvoice.primary
                            title is "CustomerRecurringInvoices"
                            menu item name is CustomerRecurringInvoices
                            icon is icon.receipt-amber
                        action is BillingInvoice.Unreleased.Create
                            title is "CreateInvoice"
                            menu item name is CreateInvoice
                            icon is icon.target-amethyst
                        action is BillingInvoiceImport.Create
                            title is "CreateInvoiceImport"
                            menu item name is CreateInvoiceImport
                            icon is icon.document-bar-chart-ruby
        QuickActions is a Pane
            double height
            Layout
                single column
                    large menu
                        action is InvoiceVerificationReport.InvoiceVerificationReport
                            title is "InvoiceVerificationReport"
                            menu item name is InvoiceVerificationReport
                            icon is icon.chart-bar-azure
                        action is InvoiceAndRegisterPrint.InvoiceAndRegisterPrint
                            title is "InvoiceAndRegisterPrint"
                            menu item name is InvoiceAndRegisterPrint
                            icon is icon.briefcase-emerald
                        action is SubSystemUpdate.SubSystemUpdate
                            title is "SubSystemUpdate"
                            menu item name is SubSystemUpdate
                            icon is icon.directory-ruby
                        list is JournalizeGroupResult.JournalizeGroupResults
                            title is "JournalizedGLDistributions"
                            menu item name is JournalizedGLDistributions
                            icon is icon.chart-pie-amber
                        action is CreateRecurringInvoices.CreateRecurringInvoices
                            title is "CreateRecurringInvoices"
                            menu item name is CreateRecurringInvoices
                            icon is icon.target-azure
                        action is BillingInvoiceImport.InterfaceInvoices
                            title is "InterfaceInvoices"
                            menu item name is InterfaceInvoices
                            icon is icon.document-blank-amethyst
                        list is BillingInterfaceResult.BillingInterfaceResults
                            title is "InterfaceResults"
                            menu item name is InterfaceResults
                            icon is icon.document-pie-chart-emerald
