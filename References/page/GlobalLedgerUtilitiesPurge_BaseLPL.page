GlobalLedgerUtilitiesPurge is a Page
    title is "Utilities"

    Utilities is a DashBoardPanel
        title is "Utilities"
        use 12 column grid
        PurgePane is a Pane
            span 12 columns
            title is "Purge"
            Layout
                two column distributed
                    large menu
                        action is PurgeTransactionDetail.PurgeTransactionDetail
                            title is "InterfacedTransactionDetail"
                            menu item name is InterfacedTransactionDetail
                            description is "Run_this_to_purge_detail_records_created_by_GLTransactionInterface"
                            icon is icon.settings-amethyst
                        action is PurgeNotToBePostedTransactionDetail.PurgeNotToBePostedTransactionDetail
                            title is "NotToBePostedTransactionDetail"
                            menu item name is NotToBePostedTransactionDetail
                            description is "Run_this_to_purge_detail_records_with_status_NotToBePosted"
                            icon is icon.settings-amethyst
                        action is PurgeGLRecords.PurgeGLRecords
                            title is "GlobalLedgerTransactionalHistory"
                            menu item name is GlobalLedgerTransactionalHistory
                            description is "Run_this_to_purge_detail,_transaction_and_journal_control_records"
                            icon is icon.settings-amethyst
                        list is PurgeGLRecordsResult.primary
                            title is "TransactionalHistoryResults"
                            menu item name is TransactionalHistoryResults
                            description is "Results_from_GlobalLedgerTransactionHistory"
                            icon is icon.outline-list-amethyst

