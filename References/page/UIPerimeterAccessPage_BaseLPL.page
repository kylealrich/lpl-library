    title is "U\\IAccessControl"

    Navigation is a Panel
        business class is MenuSecurity
            list is MenuSecurityConsoleList

    DeliveredReports is a Panel
        business class is ReportSecurity
            list is ReportSecurityConsole

    Overview is a Panel
        Layout
            single column
                header1 of "Terminology"
                text of "Configure"
                    bold
                text of "ChangeAPolicyToHideOrShowUIItemsLike_Menu_Items,_Panels,And_Delivered_Reports."
                text of "BasedOn_Delivered"
                    bold
                text of "APolicyDeliveredBy_InforOrACopyOfAPolicyDeliveredBy_Infor."
                text of "Mark_Reviewed"
                    bold
                text of "MarkReviewedAfterResolving_InforDeliveredPolicyChangesIntoYourPolicy."
                text of "Auto_Update"
                    bold
                text of "AutomaticallyMerge_InforDeliveredChangesIntoYourPolicy,OnlyChangesSinceLastReviewAreMerged.ValidOnPoliciesThatBasedOnADeliveredPolicy."
                header1 of "_"
                header1 of "Navigation"
                text of "UI_Access_ControlForNavigationGovernsAccessTo_Web_ApplicationsAndTheirNavigationComponents.DoesNotRestrictAccessToDataOrActions,Use_Security_ClassesToRestrictDataAndActionsByRole."
                text of "Important!OneActivePolicyEnables_UI_Access_ControlRulesAndDisables_Security_ClassRulesForThe_Web_Application."
                    display as red alert
                text of "Web_Application_Access"
                    bold
                text of "AnActivePolicyGrantsAccessToThe_Web_ApplicationForThe_Role."
                large menu
                    action is MenuSecurity.ImportPolicies
                        title is "ImportPolicies"
                        menu item name is MenuSecurityImportPolicies
                        description is "CreatesPoliciesBasedOn_Security_Classes.UseThisToQuicklyCreatePoliciesForYourCustomRoles."
                        icon is icon.tools
                large menu
                    action is MenuSecurity.CreatePolicy
                        title is "CreatePolicy"
                        menu item name is MenuSecurityCreatePolicy
                        description is "CreateANew_U\\I_NavigationPolicy."
                        icon is icon.new
                header1 of "DeliveredReports"
                text of "Hides_DeliveredReportInThe_Report_Catalog,DoesNotRestrictAccessToData,Use_Security_ClassesToRestrictDataAndActionsByRole."
                large menu
                    action is ReportSecurity.CreatePolicy
                        title is "CreatePolicy"
                        menu item name is ReportSecurityCreatePolicy
                        description is "CreateANew_U\\I_DeliveredReportPolicy."
                        icon is icon.new

