KitchenManagerPage is a Page
    title is "KitchenManager"

    Dashboard is a DashBoardPanel
        show 4 columns
        OpenKitchenOrders is a Pane
            double width
            business class is KitchenOrder
                list is OpenKitchenOrdersCardView
        PreparingKitchenOrders is a Pane
            double width
            business class is KitchenOrder
                list is PreparingKitchenOrdersCardView
        OpenRequisitions is a Pane
            double width
            business class is RequisitionLine
                list is LinesWithOpenKitchenDemand
        RecentlyCompletedOrders is a Pane
            double width
            business class is KitchenOrder
                list is RecentlyCompletedKitchenOrdersCardView

    DemandsByRequestingLocation is a MultiPanePanel
        pane 1
            business class is RequestingLocation
                list is LocationsWithOpenDemandFromKitchen
        pane 3
            business class is pane 1.RequestingLocationKitchenOrdersRel
                list is KitchenDemandsByRecipeList

    DemandsByRecipe is a MultiPanePanel
        pane 1
            business class is ItemLocation
                list is RecipeItemsWithOpenDemandList
        pane 3
            business class is pane 1.DemandTypeWithBackordersRel
                list is KitchenDemandsByRequestingLocation

    RequestsAndOrdersMonitoring is a Panel
        business class is ItemLocation
            list is RequestsAndOrdersDashboard

