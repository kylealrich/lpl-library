PayablesBillOfExchangePage is a Page
    title is "ManageBillsOfExchange"

    Main is a Panel
        business class is PayablesBillOfExchange
            list is PayablesBillOfExchangePrimaryList

    Processing is a Panel
        Layout
            three column distributed
                large menu
                    action is BillOfExchangeCreation.BillOfExchangeCreation
                        title is "Creation"
                        menu item name is Creation
                        description is "ScheduleInvoices_forBill_ofExchangePayment_andCreatePayments"
                        icon is icon.requestActionsIcon
                    action is BillOfExchangeGeneration.BillOfExchangeGeneration
                        title is "Generation"
                        menu item name is Generation
                        description is "GenerateBills_ofExchange"
                        icon is icon.eventCreationWizard
                    action is BillOfExchangeCashingStatement.BillOfExchangeCashingStatement
                        title is "CashingStatement"
                        menu item name is CashingStatement
                        description is "Create_aStatement_ofBill_ofExchangeDrafts_that_have_been_selected_forCashing"
                        icon is icon.document-text-ruby
                    action is BillOfExchangeBankStatement.BillOfExchangeBankStatement
                        title is "BankStatement"
                        menu item name is BankStatement
                        description is "Create_aBill_ofExchangeBankStatement"
                        icon is icon.document-text-amethyst
                    action is BillOfExchangeCashingUpdate.BillOfExchangeCashingUpdate
                        title is "CashingUpdate"
                        menu item name is CashingUpdate
                        description is "CreateGeneralLedgerDistributionRecords_forBill_ofExchangeActivity_that_has_occurred_since_the_lastCashingUpdate"
                        icon is icon.target-ruby
                    action is BillOfExchangeStatementUpdate.BillOfExchangeStatementUpdate
                        title is "StatementUpdate"
                        menu item name is StatementUpdate
                        description is "UpdateCashed_andHonoredBills_ofExchange,_UpdateVendorBalances,_andCreateGeneralLedgerDistributionRecords"
                        icon is icon.target-amber

    JournalizePreview is a Panel
        business class is PayablesBillOfExchangeDistribution
            list is BillOfExchangeJournalizePreviewList

    JournalizedGLDistributions is a Panel
        title is "ViewJournalizedDistributions"
        business class is JournalizeGroupResult
            list is JournalizeGroupResults
                title is "ViewJournalizedDistributions"

