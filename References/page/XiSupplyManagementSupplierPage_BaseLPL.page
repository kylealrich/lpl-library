XiSupplyManagementSupplierPage is a Page
    title is "SupplierPortal"

    Main is a DashBoardPanel
        use 12 column grid
        Quick_Links is a Pane
            span 3 columns
            visible when (actor.agent(SupplierSourceId).Supplier.IsAnonymousAndXref)
            Layout
                single column
                    small menu
                        link is signin
                            title is "SignIn"
                            menu item name is SignIn
                            allow anonymous access
                            icon is icon.target-azure
                        action is Supplier.SupplierCreate
                            title is "Register_\\as_\\aSupplier"
                            menu item name is RegisterAsASupplier
                            allow anonymous access
                            icon is icon.hcm-ruby
                        action is SupplierSourceId.ForgotUserName
                            title is "ForgotUserName"
                            menu item name is ForgotUserName
                            allow anonymous access
                            icon is icon.CSFSupplyManagementViewer
                        list is SupplierGroupPortalContacts.SupplierPortalContactCardList
                            title is "ContactUs"
                            menu item name is ContactUs
                            allow anonymous access
                            icon is icon.social-space-amber
        Quick_Links2 is a Pane
            span 3 columns
            title is "QuickLinks"
            visible when (actor.agent(SupplierSourceId).Supplier.IsAnonymousAndExternalEntity)
            Layout
                single column
                    small menu
                        link is signin
                            title is "SignIn"
                            menu item name is SignIn
                            allow anonymous access
                            icon is icon.target-azure
                        action is Supplier.SupplierCreateImport
                            title is "Register_\\as_\\aSupplier"
                            menu item name is RegisterAsASupplier
                            allow anonymous access
                            icon is icon.hcm-ruby
                        list is SupplierGroupPortalContacts.SupplierPortalContactCardList
                            title is "ContactUs"
                            menu item name is ContactUs
                            allow anonymous access
                            icon is icon.social-space-amber
        Profile is a Pane
            span 3 columns
            visible when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
            Layout
                single column
                    small menu
                        form is SupplierSourceId.XiSupplierUpdateComposite
                            title is "<actor.agent(SupplierSourceId).Supplier.RepresentativeTextWithTitle>"
                            menu item name is UpdateSupplier
                            icon is icon.hcm-azure
                    visible when (actor.agent(SupplierSourceId).MFADeviceRequired)
                        paragraph
                            text of "<actor.agent(SupplierSourceId).MFADeviceRequiredMF>"
                                bold
                                color of red
                    paragraph
                        text of "Contact:"
                            bold
                        text of "<actor.agent(SupplierSourceId).MainContact.FirstAndLastName>"
                    visible when (actor.agent(SupplierSourceId).TelephoneNumberEntered)
                        paragraph
                            text of "Phone:"
                                bold
                            text of "<actor.agent(SupplierSourceId).DerivedTelephoneNumber>"
                    visible when (actor.agent(SupplierSourceId).HasMobile)
                        paragraph
                            text of "Mobile:"
                                bold
                            text of "<actor.agent(SupplierSourceId).DerivedMobileNumber>"
                    visible when (actor.agent(SupplierSourceId).EmailAddressEntered)
                        paragraph
                            text of "Email:"
                                bold
                            text of "<actor.agent(SupplierSourceId).EmailAddress>"
                    paragraph
                        text of "Address:"
                            bold
                        visible when (actor.agent(SupplierSourceId).LocationAddressExists)
                            text of "<actor.agent(SupplierSourceId).FullAddressDisplay>"
                        visible when (not actor.agent(SupplierSourceId).LocationAddressExists)
                            text of "<actor.agent(SupplierSourceId).Supplier.FullAddressDisplay>"
                    paragraph
                        text of "Registration_Status:"
                            bold
                        text of "<actor.agent(SupplierSourceId).RegistrationStatus>"
        Welcome is a Pane
            span 6 columns
            visible when (session.key.SupplierGroup.ShowHomePageContent)
            Layout
                single column
                    text of "<session.key.SupplierGroup.HomePageContent>"
        LinksAndAttachments is a Pane
            span 3 columns
            business class is SupplierPortalLinksAndInstructions
                list is SupplierLinks
        InstructionsAndAnnouncements is a Pane
            span 6 columns
            visible when (actor.agent(SupplierSourceId).Supplier.IsAnonymous)
            business class is SupplierPortalLinksAndInstructions
                list is SupplierInstructions
        OpenEvents is a Pane
            span 6 columns
            visible when (session.key.SupplierGroup.CanDisplayEventsOrDisplayAnonymousEvents)
            business class is SourcingEvent
                list is HomeEvents
                    overview navigation is OpenEventsNav
        QuickLinks is a Pane
            span 3 columns
            visible when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
            Layout
                single column
                    small menu
                        link is signout
                            title is "SignOut"
                            menu item name is SignOut
                            icon is icon.target-azure
                        list is SupplierGroupPortalContacts.SupplierPortalContactCardList
                            title is "ContactUs"
                            menu item name is ContactUs
                            icon is icon.social-space-amber
                        list is SupplierPortalLinksAndInstructions.SupplierInstructionsCardList
                            title is "Instructions"
                            menu item name is Instructions
                            icon is icon.document-text-ruby
                        list is SupplierPerformanceEvaluation.SupplierEvaluationsPortalList
                            title is "Evaluations"
                            menu item name is Evaluations
                            icon is icon.document-bar-chart-amethyst
                        visible when (session.key.SupplierGroup.CanDisplayEventMetrics)
                            form is SupplierSourceId.MetricsCompositeForSupplier
                                title is "EventMetrics"
                                menu item name is EventMetrics
                                icon is icon.chart-pie-emerald
        MessageDialogNeedingAResponse is a Pane
            span 6 columns
            visible when (session.key.SupplierGroup.CanDisplayMessages)
            business class is SupplierMessageDialog
                list is SupplierMessageDialogCardList
        MyResponses is a Pane
            span 12 columns
            visible when (session.key.SupplierGroup.CanDisplayEvents)
            business class is SourcingEventResponse
                list is OpenSubmittedResponsesCardList
        ItemProposals is a Pane
            span 3 columns
            visible when (session.key.SupplierGroup.CanDisplayItemProposals)
            business class is RecallNotice
                list is MyItemProposalsCardList
                    overview navigation is ItemProposalsNav
        ContractsForAllSuppliers is a Pane
            span 6 columns
            visible when (session.key.SupplierGroup.DisplayAnonymousContracts)
            business class is Contract
                list is ContractsForAllSuppliersCardList
                    overview navigation is ContractsForAllSuppliersNav
        ResponseModificationRequests is a Pane
            span 12 columns
            visible when (session.key.SupplierGroup.CanDisplayResponseModificationRequests)
            business class is SupplierContactMessage
                list is ModificationRequests

