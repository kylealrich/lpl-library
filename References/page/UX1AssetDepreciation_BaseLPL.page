UX1AssetDepreciation is a Page
    title is "Depreciation"
    implements MenuSearch

    Depreciation is a DashBoardPanel
        use 12 column grid
        Calculations is a Pane
            span 6 columns
            title is "RunCalculations"
            Layout
                two column distributed
                    large menu
                        action is AssetBatchUpdateResult.DepreciationCalculation
                            title is "CalculateDepreciation"
                            menu item name is CalculateDepreciation
                            icon is icon.calculator-azure
                            Search Terms
                                    "CalculateDepreciation"
                                    "DepreciationCalculation"
                        action is AssetDepreciationCalculationAndList.AssetDepreciationCalculationAndList
                            title is "CalculateDepreciation_-Old"
                            menu item name is CalculateDepreciationOld
                            icon is icon.calculator-azure
                            Search Terms
                                    "CalculateDepreciation"
                        action is DepreciationRecalculation.DepreciationRecalculation
                            title is "RecalculateDepreciation"
                            menu item name is RecalculateDepreciation
                            icon is icon.calculator-azure
                            Search Terms
                                    "RecalculateDepreciation"
        RunReports is a Pane
            span 6 columns
            Layout
                two column distributed
                    large menu
                        action is ClassDepreciationReport.ClassDepreciationReport
                            title is "ClassDepreciation"
                            menu item name is ClassDepreciation
                            icon is icon.window-time-charts-azure
                            Search Terms
                                    "ClassDepreciationReport"
                        action is CurrentYearDepreciationReport.CurrentYearDepreciationReport
                            title is "CurrentYearDepreciation"
                            menu item name is CurrentYearDepreciation
                            icon is icon.window-time-charts-azure
                            Search Terms
                                    "CurrentYearDepreciationReport"
                        action is DepreciableAssetRegister.DepreciableAssetRegister
                            title is "DepreciableAssetRegister"
                            menu item name is DepreciableAssetRegister
                            description is "View_year-to-date_depreciation"
                            icon is icon.document-azure
                            Search Terms
                                    "DepreciableAssetRegister"
                        action is DepreciationHistoryReport.DepreciationHistoryReport
                            title is "DepreciationHistory"
                            menu item name is DepreciationHistory
                            icon is icon.window-time-charts-azure
                            Search Terms
                                    "DepreciationHistory"
                        action is DepreciationRecalculationReport.DepreciationRecalculationReport
                            title is "DepreciationRecalculation"
                            menu item name is DepreciationRecalculation
                            icon is icon.window-time-charts-azure
                            Search Terms
                                    "DepreciationRecalculation"
        DepreciationAndValuationMethods is a Pane
            span 6 columns
            Layout
                two column distributed
                    large menu
                        list is Method.DepreciationMethodList
                            title is "Depreciation"
                            menu item name is DepreciationMethods
                            icon is icon.clipboard-text-azure
                            Search Terms
                                    "DepreciationMethods"
                                    "Methods"
                        list is Method.InsuranceMethodList
                            title is "Insurance"
                            menu item name is InsuranceMethods
                            icon is icon.clipboard-text-azure
                            Search Terms
                                    "InsuranceMethods"
                        list is Method.ReplacementMethodList
                            title is "Replacement"
                            menu item name is ReplacementMethods
                            icon is icon.clipboard-text-azure
                            Search Terms
                                    "ReplacementMethods"
                        list is BusinessClassCompute.BusinessClassComputes
                            title is "Computations"
                            menu item name is BusinessClassComputes
                            icon is icon.clipboard-text-azure
                            Search Terms
                                    "BusinessClassComputes"
                                    "DepreciationComputes"
        Utilities is a Pane
            span 6 columns
            Layout
                two column distributed
                    large menu
                        action is DepreciationHistoryBalances.DepreciationHistoryBalances
                            title is "DepreciationHistoryBalances"
                            menu item name is DepreciationHistoryBalances
                            icon is icon.cycle-azure
                            Search Terms
                                    "DepreciationHistoryBalances"
                        action is DepreciationHistoryRebuild.DepreciationHistoryRebuild
                            title is "RebuildHistory"
                            menu item name is RebuildDepreciationHistory
                            icon is icon.cycle-azure
                            Search Terms
                                    "RebuildDepreciationHistory"
                                    "DepreciationHistoryRebuild"

    Projections is a Panel
        business class is AssetProjectionParameter
            list is ProjectionParameterList

