InventoryIntelligencePage is a Page
    title is "InventoryIntelligence"
    show panel control on left

    Locations is a Panel
        title is "AllLocations"
        business class is IIHInventoryLocation
            list is LocationSummaryList
                title is "AllLocations"

    PerpetualItems is a Panel
        business class is InventoryLocation
            list is RecommendationsDashboard

    ItemDetails is a Panel
        visible when (actor.agent(Employee).InventoryIntelligenceProcessorAcessExists)
        business class is IIHItemLocation
            list is ItemLocationDetailsDashboard

    ParItems is a Panel
        business class is InventoryLocation
            list is ParRecommendationsDashboard

    ParItemDetails is a Panel
        visible when (actor.agent(Employee).InventoryIntelligenceProcessorAcessExists)
        business class is IIHItemLocation
            list is ParItemLocationDetailsDashboard

    AllItems is a Panel
        visible when (actor.agent(Employee).InventoryIntelligenceProcessorAcessExists)
        business class is IIHItemLocation
            list is AllItemsView

