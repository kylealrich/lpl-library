BudgetPage is a Page
    title is "Budgets"

    Home is a DashBoardPanel
        show 4 columns
        QuickLinks is a Pane
            Layout
                single column
                    small menu
                        list is AccountAnalysisSettings.AccountAnalysisSettingsForActorList
                            title is "AccountAnalysis"
                            menu item name is AccountAnalysis
                            icon is icon.target-ruby
                        visible when (actor.context.FinanceEnterpriseGroup.GLCommitDocumentExists)
                            page is GLCommitmentReport
                                title is "Commitments_andEncumbrances"
                                menu item name is CommitmentsAndEncumbrances
                                icon is icon.target-emerald
                        page is TotalsPage
                            title is "Totals"
                            menu item name is Totals
                            icon is icon.target-amethyst
                        list is BudgetTemplateGroupTotal.BudgetTemplateGroupTotalList
                            title is "UnreleasedObligations"
                            menu item name is PendingTemplateUpdates
                            icon is icon.target-amber
                        list is BudgetGroup.AllCheckedGroups
                            title is "GroupsOverTemplateThreshold"
                            menu item name is GroupsOverTemplateThreshold
                            icon is icon.target-azure
                        list is BudgetEditBatch.primary
                            title is "BudgetEditBatch"
                            menu item name is BudgetEditBatch
                            icon is icon.target-ruby
        Scenarios is a Pane
            triple width
            business class is Scenario
                list is Budgets
                    overview navigation is BudgetScenariosNav
        Templates is a Pane
            double width
            business class is BudgetTemplate
                list is EditTemplates
                    overview navigation is TemplateNav
        ChangeRequests is a Pane
            double width
            business class is BudgetChangeOrder
                list is ChangeRequests
                    overview navigation is ChangeRequestNav

    Scenarios is a Panel
        business class is Scenario
            list is BudgetScenarioDashBoard

