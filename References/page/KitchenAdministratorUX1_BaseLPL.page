KitchenAdministratorUX1 is a Page
    title is "KitchenAdministration"
    implements MenuSearch

    OtherModules is a DashBoardPanel
        use 12 column grid
        KitchenOrders is a Pane
            span 12 columns
            icon is icon.outline-maintenance-emerald
            Layout
                single column
                    small menu
                        list is RecipeUnitOfMeasure.primary
                            title is "RecipeUnitsOfMeasure"
                            menu item name is RecipeUnitsOfMeasure
                        list is Item.RecipeItemDashboard
                            title is "RecipeItems"
                            menu item name is RecipeItems
                        list is Item.IngredientItemDashboard
                            title is "IngredientItems"
                            menu item name is IngredientItems
                        list is InventoryLocation.KitchenLocations
                            title is "KitchenLocations"
                            menu item name is KitchenLocations
                        list is Recipe.RecipePrimaryDashboard
                            title is "Recipes"
                            menu item name is Recipes

