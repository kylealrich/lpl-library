MobilePurchaseOrderInterfaceCommentsForm is a Form
    title is "Comment"
    Actions
        action is save
            label is "_"
    Layout
        paragraph
            Company
                display as text
            Company.Name
                label is "Name"
                display as text
        paragraph
            PurchaseOrderInterface
                label is "PurchaseOrderInterface"
                display as text
        blank line
        two column distributed
            CommentType
            CommentTitle
                label is "Title"
        single column
            CommentText
                label is "Text"
                use text area of 12 lines
            Attachment.Title
                label is "AttachmentTitle"
            Attachment.File
            visible when (false)
                Attachment.MimeType
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
