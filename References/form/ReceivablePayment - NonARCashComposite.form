NonARCashComposite is a CompositeForm
    title is "NonARCashPayment<CompanyTitle>"
    context form is NonARCashContextForm
        background is theme color
    Main is a Panel
        form is ReceivablePaymentMainForNonAR
    Distributions is a Panel
        visible when (Status.Unreleased)
        list is NonARReceivableGLDistributionRel.NonARReceivablePaymentsDistributionList
    ReleasedDistributions is a Panel
        title is "Distributions"
        visible when (not Status.Unreleased)
        list is NonARReceivableGLDistributionRel.ReleasedNonARReceivablePaymentsDistributionList
    CashDetails is a Panel
        visible when (Company.DetailedCashDistributions)
        list is ReceivablePaymentCashDetail set.CashDetails
    Comments is a Panel
        list is CompanyCustomerCommentRel.NonARPaymentCommentsList
    Rebates is a Panel
        visible when (AllowRebateEntry)
        form is Rebates
    Attachments is a Panel
        list is ReceivablePaymentAttachment set.primary
