TierQualifiersMain is a Form
    title is "TierQualifiers"
    Layout
        single column
            BaseTier
        visible when (not BaseTier)
            paragraph
                PurchaseType
                PurchaseBy
            single column
                PurchaseOperator
            paragraph
                PurchaseAmtPct.PurchasePercent
                    label is "PurchasePercentOfAllPurchases"
                PurchaseAmtPct.PurchaseAmount
                    label is "OrPurchaseAmount"
            paragraph
                TargetedPurchasesFromDate
                    label is "TargetedPurchasesFromDate"
                TargetedPurchasesToDate
                    label is "TargetedPurchasesToDate"
            three column
                PurchaseQuantity
                    label is "Quantity"
                PurchaseBeginRange
                    label is "BeginDateForQuantityQualifier"
                PurchaseEndRange
                    label is "EndDate"
            single column
                OrGroup
                    label is "Group"
