MContractDashboardContext is a Form
    title is "ContractDashboardContext"
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        display as text
            two column distributed
                ContractGroup
                paragraph
                    Contract
                    Name
                        no label
                WorkingContractID
            two column distributed
                visible when (CanChangeSupplier)
                    Supplier
                        display as text
                visible when (not CanChangeSupplier)
                    Supplier
                        label is "*Supplier"
                Supplier.SupplierName
                    no label
                    display as text
            two column distributed
                SupplierSourceId
                    label is "*SupplierContact"
                SupplierSourceId.MainContact.FirstAndLastName
                    no label
            two column distributed
                OnHold
                Status
            single column
                visible when (ContractLineErrorsExistNotInactiveVendorItem)
                    text of "LineErrorsExist"
                        bold
                        color of red
