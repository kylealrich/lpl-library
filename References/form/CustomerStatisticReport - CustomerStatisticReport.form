CustomerStatisticReport is an ActionForm
    action is CustomerStatisticReport
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            CreditAnlyst
                label is "CreditAnalyst"
                select is CreditAnalyst
            CreditAnlyst.Name
                no label
                display as text
        paragraph
            MajClass
                label is "MajorClass"
                select is MajorClass
            MajClass.Description
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        single column
            FiscalYear
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CustomerStatisticReportReport_RDG
            column2 of 25%
                CustomerStatisticReportReport_XPT
