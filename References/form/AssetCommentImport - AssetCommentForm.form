AssetCommentForm is a Form
    is primary
    propagate as a drill
    title is "AssetComment"
    Layout
        two column
            column1 of 30%
                RunGroup
                FinanceEnterpriseGroup
            column2 of 70%
                RecordInError
                    display as text
                ErrorMessage
                    display as text
        two column
            column1 of 30%
                paragraph
                    Company
                        select is Companies
                    Company.GeneralLedgerCompany.Name
                        no label
                        display as text
                ConversionNumber
                    label is "AssetImportGroup"
            column2 of 70%
                AssetRel.TagNumber
                    label is "TagNumber"
                    display as text
        two column
            column1 of 30%
                Name
                    label is "Title"
            column2 of 70%
                AssetCommentImport
                    display as text
        two column
            column1 of 30%
                Type
            column2 of 70%
                AssetComment
                    display as text
        paragraph
            Comment
        paragraph
            Attachment
                compact format
        paragraph
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
