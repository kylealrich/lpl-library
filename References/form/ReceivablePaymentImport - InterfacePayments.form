InterfacePayments is an ActionForm
    action is InterfacePayments
    Layout
        single column
            PrmRunGroup
                label is "RunGroup"
        paragraph
            PrmCompany
                label is "Company"
            PrmCompany.Name
                no label
                display as text
        single column
            PrmReference
                label is "Reference"
            ReleaseBatch
                label is "ReleaseBatch"
                    left of field
            AssignCustomerBasedOnFirstInvoiceMatch
                label is "AssignCustomerOnFirstRemitMatch"
                    left of field
            text of "Or"
            AssignPaymentToInvoiceCompanyCustomer
                label is "AssignCompanyAndCustomerFromBankAccount"
                    left of field
        paragraph
            DepositBankCode
                label is "DepositBankCode"
            DepositBankCode.Description
                no label
                display as text
