CopyItemLocation is an ActionForm
    action is CopyItemLocation
        on completion navigate to ItemLocationInformation
    title is "CopyByItemLocation"
    Layout
        two column table
            column1
                header2 of "CopyFrom"
                paragraph
                    PrmFromCompany
                        when value changed
                            PrmItemLocation.Company =  PrmFromCompany
                    PrmFromCompany.Name
                        no label
                        display as text
                visible when (PrmFromCompany entered)
                    paragraph
                        PrmFromCompany.GeneralLedgerCompany.Currency
                            display as text
                paragraph
                    PrmFromLocation
                        show up to 5 characters
                        when value changed
                            PrmItemLocation.InventoryLocation =  PrmFromLocation
                    PrmFromLocation.Name
                        no label
                        display as text
                paragraph
                    PrmItem
                        show up to 5 characters
                        when value changed
                            PrmItemLocation.Item =  PrmItem
                    PrmItem.Description
                        no label
                        display as text
                paragraph
                    PrmCopyReplenishmentInformation
                paragraph
                    PrmCopyComments
            column2
                header2 of "CopyTo"
                paragraph
                    PrmToCompany
                    PrmToCompany.Name
                        no label
                        display as text
                visible when (PrmToCompany entered)
                    paragraph
                        PrmToCompany.GeneralLedgerCompany.Currency
                            display as text
                paragraph
                    PrmToLocation
                        show up to 5 characters
                        when value changed
                            PrmInventoryLocationAccountGroup =  PrmToLocation.DefaultGeneralLedgerCategoryRel.GeneralLedgerCategory
                    PrmToLocation.Name
                        no label
                        display as text
                paragraph
                    PrmInventoryLocationAccountGroup
                    PrmInventoryLocationAccountGroup.Description
                        no label
                        display as text
                visible when (PrmItemLocation.BinTracked)
                    PrmPreferredBin
        four column distributed
            column1
                visible when (PrmItemLocation.Company.CostingMethod.StandardCosting)
                    paragraph
                        PrmItemLocation.StandardCost
                            display as text
            column3
                visible when (PrmToCompany.CostingMethod.StandardCosting)
                    paragraph
                        PrmStandardCost
                            show up to 10 characters
                            display as required
        visible when (false)
            PrmItemLocation.Company
            PrmItemLocation.InventoryLocation
            PrmItemLocation.Item
