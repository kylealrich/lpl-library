MainForm is a Form
    Layout
        two column distributed
            visible when (not RecordExists)
                column1
                    paragraph
                        CashCode
                            when value changed
                                refresh AutoNumberingAllowed
                        CashCode.Description
                            no label
                            display as text
                        CashCode.Currency
                            no label
                            display as text
                column2
                    paragraph
                        CashLedgerReturnedPayment.BankTransactionCode
                            label is "TransactionCode"
                            display as required
                            when value changed
                                refresh AutoNumberingAllowed
                        CashLedgerReturnedPayment.BankTransactionCode.Description
                            no label
                            display as text
        two column distributed
            column1
                TransactionNumber
                    display as required when (not AutoNumberingAllowed)
                paragraph
                    Company.OrigCompany
                        select is Company
                        display as required
                        when value changed
                            refresh AutoNumberingAllowed
                    Company.OrigCompany.Name
                        no label
                        display as text
                    Company.OrigCompany.Currency
                        display as text
                paragraph
                    CurrencyTable
                    CurrencyTable.Description
                        no label
                        display as text
                BankAccountReturnAmountUnsigned
                    label is "ReturnAmount"
                ReturnDate
                Description
            column2
                PostDate
                GeneralLedgerSourceCode
                    label is "SourceCode"
