OLAPConnection is a Form
    is primary
    title is "OLAPConnection"
    Layout
        single column
            column1
                header1 of "Connection"
                    show border color of black
                OLAPConnection
                    label is "Connection"
                    left align
                header1 of "Status"
                    show border color of black
                Status
                    label is "Status"
                    display only
                    raise red alert when (IsErrorStatus)
                        mouse over text is "CouldNotConnectToTheOLAPServer"
                    raise yellow alert when (Status.Unknown)
                        mouse over text is "CouldNotDetermineTheConnectionStatus"
                    raise green alert when (Status.Healthy)
                        mouse over text is "ConnectionToOLAPServerWasSuccessful"
                StatusMessage
                    display only
                    use text area of 8 lines
        visible when (IsInforBI)
            header1 of "ConnectionParameters"
                show border color of black
            two column
                column1
                    HostAddress
                        display only
                    Protocol
                        display only
                    CommPort
                        display only
                    DatabaseName
                        display only
                column2
                    UserName
                        display only
                    Password
                        display only
                    LogLevel
                        display only
