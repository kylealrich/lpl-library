Main is a Form
    Layout
        single column
            paragraph
                visible when (IDMAdditionalAttributesHeader entered)
                    IDMGenerateDocumentTypes
                        no label
                        header1
                        bold
                        display as text
                        raise red alert when (not ActivateAdditionalAttributes)
                            mouse over text is "Inactive"
                        raise green alert when (ActivateAdditionalAttributes)
                            mouse over text is "Active"
                visible when (IDMAdditionalAttributesHeader not entered)
                    IDMGenerateDocumentTypes
                        label is "DocumentType"
        three column distributed
            column1
                paragraph
                    Description
                paragraph
                    visible when (IDMAdditionalAttributesHeader entered)
                        BusinessClass
                            label is "MainBusinessClass"
                            display as text
            visible when (IDMAdditionalAttributesHeader entered)
                column2
                    paragraph
                        DerivedStatus
                            label is "ImportStatus"
                            display as tag
                                color of gray when (Status.NotImported)
                                color of green when (Status.Imported)
                    paragraph
                        Application
                            display as text
                column3
                    paragraph
                        button of "Activate"
                            visible when (ValidForActivation)
                            action is Activate
                        button of "Deactivate"
                            visible when (ValidForDeactivation)
                            action is Deactivate
                paragraph
                    visible when (DisplayErrorMessage)
                        DerivedErrorsExistMessage
                            no label
                            display as tag
                                color of red
