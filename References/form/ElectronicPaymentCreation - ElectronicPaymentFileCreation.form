ElectronicPaymentFileCreation is an ActionForm
    action is ElectronicPaymentCreation
    Layout
        header2 of "Main"
        two column distributed
            paragraph
                VendorGroup
                VendorGroup.Description
                    no label
                    display as text
            paragraph
                PayGroup
                    select is PayGroups
                PayGroup.Name
                    no label
                    display as text
        two column distributed
            paragraph
                PaymentCode
                    select is CashPayments
                PaymentCode.Description
                    no label
                    display as text
            paragraph
                ProcGrp
                    label is "ProcessGroup"
                    select is ProcessGroups
                ProcGrp.Description
                    no label
                    display as text
        paragraph
            CashCode
                show up to 12 characters
            CashCode.Description
                no label
                display as text
        paragraph
            text of "Or"
                bold
        paragraph
            CashCodeGrp
                label is "CashCodeGroup"
                select is CashCodeGroup
            CashCodeGrp.Description
                no label
                display as text
        two column distributed
            CombineOutputByAccount
            SuppressNoPaymentError
        paragraph
            FileName
        header2 of "SelectOptions"
        two column table
            column1
                paragraph
                    CheckDate
                        label is "PaymentDate"
                paragraph
                    StartTransNbr
                        label is "StartingNumber"
                paragraph
                    InclComments
                        label is "IncludeComments"
                paragraph
                    InclFaxEmail
                        label is "IncludeFax_andEmail"
                        raise blue alert when (true)
                            mouse over text is "<PaymentCode.ElectronicPaymentCreationMessage>"
            column2
                paragraph
                    EffectiveDate
                paragraph
                    DocCurrency
                        label is "DocumentCurrency"
                paragraph
                    UseAp150SortOpt
                        label is "UseCashRequirementsSortOptions"
        header2 of "RerunOptions"
        two column distributed
            RecreateOption
                label is "RecreateFile"
            SerialNum
                label is "SerialNumber"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ElectronicPaymentCreationReport_RDG
                ElectronicPaymentEtebacRemit_RDG
                ElectronicPaymentErrorReport_RDG
            column2 of 25%
                ElectronicPaymentCreationReport_XPT
                ElectronicPaymentEtebacRemit_XPT
                ElectronicPaymentErrorReport_XPT
