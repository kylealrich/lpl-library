Payment is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Lessor
                        label is "CurrentLessor"
                        select is VendorName
                    Lessor.VendorName
                        no label
                        display as text
                FirstPaymentDate
                PaymentsPerYear
                PaymentTiming
            column2
                DeferredRentBalance
                LeaseInvoicePrefix
                    label is "InvoicePrefix"
                InterestRate
                    label is "LesseeDiscountRate"
                ImplicitInterestRate
            column3
                LeaseAllocationCode
                    label is "AllocationCode"
                LeaseAllocationCodeType
                    label is "AllocationCodeType"
                OperatingLeaseAllocationCode
                    label is "LongTermOLAllocationCode"
        header2 of "Accounts"
        paragraph
            DebtAccount
                compact format
            DebtAccount.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
        paragraph
            InterestAccount
                compact format
            InterestAccount.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
        paragraph
            DeferredRentAccount
                compact format
            DeferredRentAccount.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
        paragraph
            EquityAccount
                compact format
            EquityAccount.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
        paragraph
            AccruedAccount
                compact format
            AccruedAccount.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
        paragraph
            LongTermOperatingLeaseExpense
                label is "OperatingLeaseExpenseAccount"
                compact format
            LongTermOperatingLeaseExpense.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
