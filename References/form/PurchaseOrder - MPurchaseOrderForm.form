MPurchaseOrderForm is a CompositeForm
    title is "PurchaseOrder<PurchaseOrder>"
    called out actions only
    context form is MPurchaseOrderContext
        background is theme color
    Actions
        action is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is MHeaderDetails
    Lines is a Panel
        list is PurchaseOrderLinesRel.MAllPurchaseOrderLines
    Totals is a Panel
        form is MPurchaseOrderAmountTotals
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is PurchaseOrderComment set.MPurchaseOrderCommentList
