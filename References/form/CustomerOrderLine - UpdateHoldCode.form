UpdateHoldCode is an ActionForm
    action is UpdateHoldCode
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            CustomerOrder
                label is "Order"
                display as text
        paragraph
            CustomerOrderLine
                label is "Line"
                display as text
        paragraph
            ProjectedMargin
                display as text
        paragraph
            BillingItemGeneralLedgerAccountRel.ProfitMargin
                label is "MarginLimit"
                display as text
        paragraph
            PrmHoldCode
                label is "HoldCode"
        paragraph
            button of "Remove_Hold_Code" with icon.cancel
                label is "Remove"
                when button pressed
                    PrmHoldCode =  blank
