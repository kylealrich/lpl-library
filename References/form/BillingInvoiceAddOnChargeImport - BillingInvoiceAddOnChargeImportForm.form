BillingInvoiceAddOnChargeImportForm is a Form
    propagate as a drill
    title is "BillingInvoiceAddOnChargeImport"
    Layout
        paragraph
            Company
                display as text
        visible when (not ContextBillingInvoiceImport.IsManualInvoiceNumbering)
            paragraph
                InvcPrefix
                    label is "InvoicePrefix"
                    display as text
                InvoiceNumber
                    display as text
        visible when (ContextBillingInvoiceImport.IsManualInvoiceNumbering)
            paragraph
                ContextBillingInvoiceImport.GlobalInvoiceNumber
                    label is "Invoice"
                    display as text
        paragraph
            visible when (LineNumber entered)
                LineNumber
                    display as text
        paragraph
            visible when (LineNumber entered)
                BillingInvoiceImportLineRel.Item
                    display as text
        paragraph
            AddOnChargeNumber
                label is "Sequence"
                display as text
        paragraph
            Miscellaneous
                label is "Add-OnCharge"
                compact format
            Miscellaneous.Description
                no label
                display as text
        paragraph
            visible when (LineNumber entered)
                EnteredUnitPrice
                    label is "UnitPrice"
        paragraph
            visible when (LineNumber entered)
                UnitCost
        paragraph
            EnteredPrice
                label is "FlatAmount"
        paragraph
            Cost
        paragraph
            PricePercent
        paragraph
            CostPercent
        paragraph
            OrderDiscount
                label is "Discountable"
        paragraph
            TaxExemptCode
                label is "TaxExempt"
