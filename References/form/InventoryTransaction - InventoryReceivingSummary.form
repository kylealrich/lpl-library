InventoryReceivingSummary is a Form
    title is "InventoryReceivingSummary"
    Layout
        display as text
            paragraph
                Company
                Company.Name
                    no label
            paragraph
                InventoryLocation
                    label is "Location"
                InventoryLocation.Name
                    no label
            paragraph
                TransactionQuantityTotal
                    label is "TotalReceiveQuantity"
            paragraph
                TotalReceiveQuantity
                    label is "CurrentReceiveQuantity"
            single column
                TransactionDate
                    label is "ReceivedDate"
                GeneralLedgerDate
                    label is "PostDate"
                blank line
                blank line
        visible when (HasReleaseEnable)
            text of "PressReleaseWhenReceivingIsComplete"
                bold
                color of blue
            blank line
            button of "Release"
                action is ReleaseReceiving
        visible when (Status.Released)
            text of "ReceivingComplete"
                bold
                color of blue
