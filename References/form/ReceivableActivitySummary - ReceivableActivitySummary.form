    action is ReceivableActivitySummary
    title is "ReceivableActivitySummary"
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            ClosePayAvg
                label is "ClosePaymentAverages"
        single column
            ProcLevelBreak
                label is "ProcessLevelBreaks"
        single column
            ForPrint
                label is "ListF\\O\\RAverages"
        single column
            FutureApps
                label is "QualifyFutureApplications"
        single column
            AgeSummary
                label is "CreateAgingSummary"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ReceivableActivitySummaryReport_RDG
                ReceivableActivitySummaryErrorReport_RDG
            column2 of 25%
                ReceivableActivitySummaryReport_XPT
                ReceivableActivitySummaryErrorReport_XPT
