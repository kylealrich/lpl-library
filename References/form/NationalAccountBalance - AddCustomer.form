AddCustomer is an ActionForm
    action is AddCustomer
    Layout
        single column
            PrmCompany
                label is "Company"
                select is Company.CustomerGroupField.CustomerGroup.ReceivableCompany set.ReceivableCompanyList
            visible when (PrmCompany not entered)
                PrmCustomer
                    label is "Customer"
                    select is CustomerContextCompanyCustomerSelectList
            visible when (PrmCompany entered)
                PrmCustomer
                    label is "Customer"
                    select is PrmCompany.CustomerGroupField.CustomerGroup.Customer set.CustomerContextCompanySelectList
