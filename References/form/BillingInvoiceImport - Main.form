Main is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Location
                    Location.Name
                        no label
                        display as text
                paragraph
                    Customer
                        select is GroupSearchName
                    Customer.Name
                        no label
                        display as text
                paragraph
                    CustomerShipTo
                        label is "ShipTo"
                        select is CustomerShipTos
                    CustomerShipTo.Name
                        no label
                        display as text
                paragraph
                    BillTo
                        select is BillTo
                    BillTo.Name
                        no label
                        display as text
                paragraph
                    ReasonCode
                        select is ReasonCodes
                    ReasonCode.Description
                        no label
                        display as text
                paragraph
                    OriginalBillingInvoice
                        label is "OriginalInvoice"
                paragraph
                    CustomerPurchaseOrder
                        label is "CustomerP\\ONumber"
            column2
                paragraph
                    CustomerOrder
                        label is "OrderNumber"
                        select is OrdersByOrderNumber
                paragraph
                    WarehouseShipment
                        label is "ShipmentNumber"
                paragraph
                    InvoiceDate
                paragraph
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                paragraph
                    PriceDate
                paragraph
                    TaxDate
                paragraph
                    ShipDate
            column3
                paragraph
                    Currency
                        label is "CurrencyCode"
                paragraph
                    CurrencyRate
                paragraph
                    BillingInvoiceSource
                        label is "InvoiceSource"
                paragraph
                    OrderEntryOperator
                        label is "Operator"
                paragraph
                    CertificationNumber
                paragraph
                    CertificationDate
                visible when (Company.ReceivableCompany.UseEWayBillNumber)
                    EWayBillNumber
        header2 of "PaymentData"
        three column distributed
            column1
                TaxExemptCode
                TaxableTotal
                    label is "TaxableAmount"
                TaxCode
                    select is TaxCodes
                EnteredDiscount
                CheckNumber
                    label is "PaymentNumber"
                CashInAdvanceAmount
                    label is "DownPayment"
            column2
                LetterOfCredit
                    label is "Letter_ofCredit"
                FreightCharge
                TermCode
                    label is "PaymentTerms"
                BankTransactionCode
                    label is "BankInstitutionCode"
                    select is CashPayments
                ReceivableGeneralLedgerCode
                    label is "AccountsReceivableCode"
                    select is ARCodes
                HoldCode
                    select is HoldCodes
            column3
                FreightCode
                    select is FreightCodes
                paragraph
                    InvoiceTypeCode
                        select is CustomerInvoiceTypeCodeList
                    InvoiceTypeCode.Description
                        no label
                        display as text
                RegimeCode
                AutoApply
                    label is "AutoApplicationFlag"
                Revalue
        header2 of "SalesData"
        three column distributed
            column1
                paragraph
                    Territory
                        select is Territories
                paragraph
                    CommissionSplitPercentage
                        label is "Split"
            column2
                paragraph
                    SalesRepresentative
                        label is "SalesRepresentative1"
                        select is SalesReps
                paragraph
                    CommisionRate1
                        label is "Commission"
            column3
                paragraph
                    Salesman2
                        label is "SalesRepresentative2"
                        select is SalesReps
                paragraph
                    CommisionRate2
                        label is "Commission"
