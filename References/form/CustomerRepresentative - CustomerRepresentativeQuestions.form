CustomerRepresentativeQuestions is a CompositeForm
    title is "Questions_for<CustomerName>"
    called out actions only
    context form is QuestionsContext
        background is theme color
    Actions
        action is save and close
            action icon is save
        action is refresh
            label is "_"
    Questions is a Panel
        valid when (CustomerGroup.QuestionsExist)
        mouse over text is "<CustomerGroup.AccessRequestQuestionText>"
        panel header is "<CustomerGroup.AccessRequestQuestionText>"
        template is CustomerGroup.ActiveCustomerGroupQuestionRel
            business class is CustomerRepresentativeQuestionResponse
                form is CustomerQuestionResponse
