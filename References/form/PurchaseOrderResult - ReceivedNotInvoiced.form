ReceivedNotInvoiced is an ActionForm
    action is CreateReceivedNotInvoicedReport
    title is "ReceivedNotInvoicedReport"
    Layout
        single column
            Description
                label is "ReportDescription"
        paragraph
            ParametersReceivedNotInvoicedReport.Company
                label is "Company"
            ParametersReceivedNotInvoicedReport.Company.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            ParametersReceivedNotInvoicedReport.CompanyGroup
                label is "CompanyGroup"
            ParametersReceivedNotInvoicedReport.CompanyGroup.Description
                no label
                display as text
        blank line
        single column
            ParametersReceivedNotInvoicedReport.UpdateOption
                label is "UpdateOption"
            ParametersReceivedNotInvoicedReport.ThruGlPeriod
                label is "G\\LPostingPeriod"
            ParametersReceivedNotInvoicedReport.ThruGlYear
                label is "G\\LPostingYear"
