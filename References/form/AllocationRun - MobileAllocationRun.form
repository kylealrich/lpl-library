        text of "<RunName>"
            header1
            center
        text of "<AllocationRun>"
            header3
            center
        single column
            paragraph
                blank line
                text of "_"
            paragraph
                Status
                    display as text
            paragraph
                PostingDate
                    display as text
            paragraph
                UseCapacityLedger
                    label is "IsCapacity"
                    display as text
            paragraph
                Allocation
                    display as text
            paragraph
                AllocationGroup
                    display as text
            paragraph
                FromStep
                    display as text
            paragraph
                ToStep
                    display as text
            paragraph
                create stamp
                    label is "RunDate/Time"
                    display as text
