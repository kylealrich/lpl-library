EmployeeContactUpdateFormAdmin is a Form
    is primary
    title is "ResourceContact"
    Layout
        paragraph
            Employee
                label is "EmploymentID"
            Employee.Name.PreferredFirstAndLastName
                no label
                display as text
        three column distributed
            Description
            effective date
            Active
        single column
            ContactMethod
                label is "TelephoneType"
        paragraph
            Country
            Country.Name
                no label
                display as text
        paragraph
            ContactDetail.Telephone.InternationalPrefix
                label is "Country/\\JurisdictionCode"
            ContactDetail.Telephone.SubscriberNumber
                label is "PhoneNumber"
            ContactDetail.Telephone.Extension
                label is "Ext"
            single column
                visible when (IsWorkTelephone)
                    IsWorkTelephone
                        label is "UsedAsWorkPhone"
                PreferredContact
                    label is "PreferredTelephonePagerOrFaxNumber"
        paragraph
            ContactDetail.EmailAddress
            single column
                visible when (IsWorkEmail)
                    IsWorkEmail
                        label is "UsedAsWorkEmail"
                PreferredContact
                    label is "PreferredEmail"
        paragraph
            ContactDetail.InstantMessageAddress.IMUserName
                label is "InstantMessageAddress"
            ContactDetail.InstantMessageAddress.IMType
                label is "Network"
            PreferredContact
                label is "PreferredInstantMessage"
        single column
            WhenAvailable
