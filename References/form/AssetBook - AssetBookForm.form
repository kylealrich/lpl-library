AssetBookForm is a Form
    title is "AssetBookDetail"
    Layout
        visible when (not BookEntered)
            Book
                label is "Book"
                select is ActiveDepreciationBooks
        visible when (DisplayAdjustmentDate)
            paragraph
                AdjustmentDate
                    label is "BookAdjustmentDate"
        three column
            column1 of 25%
                Active
                paragraph
                    Method
                        select is DepreciationMethodsRel.DepreciationMethodList
                    Method.Description
                        no label
                        display as text
                        show up to 20 characters
                Convention
            column2 of 25%
                InServiceDate
                Life
                visible when (AllowBookUpdateWithRegulation)
                    BookRegulation
                visible when (DisplayBookRegulation)
                    BookRegulation
                        display as text
            column3 of 50%
                Book.Ledger
                    display as text
                paragraph
                    LifeRemaining
                    SpreadOverRemainingLife
                Basis
        header3 of "Depreciation"
        three column
            column1 of 25%
                paragraph
                    YearToDateDepreciation
                        label is "YearToDate"
                paragraph
                    LifeToDateDepreciation
                        label is "LifeToDate"
                paragraph
                    visible when (IsNotWorkInProcess)
                        ComputeOption
                paragraph
                    visible when (DisplayAdjustmentPostHistory)
                        AdjustPriorYearHistoryTransactions
                            label is "AdjustmentPostHistory"
            column2 of 25%
                LifeInYears
                    display as text
                YearPlacedInService
                    label is "YearsInService"
                    display as text
                BusinessPercent
                HistoryPostingDate
            column3 of 50%
                paragraph
                    visible when (not Asset.Classification.Operating)
                        BookValue
                            display as text
                    visible when (Asset.Classification.Operating)
                        OperatingBookValue
                            label is "RightOfUseBalance"
                            display as text
                SalvageValue
                paragraph
                    PersonalUseCode
                        label is "VehicleLimitCode"
                        select is LimitCodeRel.LimitCodeList
                    PersonalUseCode.Description
                        no label
                        display as text
        header3 of "Insurance"
        three column
            column1 of 25%
                paragraph
                    ActualInsuranceValue
            column2 of 25%
                paragraph
                    InsuranceCalculationMethod
                        label is "CalculationMethod"
                        select is InsuranceMethodsRel.InsuranceMethodList
                    InsuranceCalculationMethod.Description
                        no label
                        display as text
            column3 of 60%
                CalculatedInsuranceValue
                    label is "CalculatedInsuranceValue"
        header3 of "Replacement"
        three column
            column1 of 25%
                paragraph
                    ReplacementCalculationMethod
                        label is "CalculationMethod"
                        select is ReplacementMethodsRel.ReplacementMethodList
                    ReplacementCalculationMethod.Description
                        no label
                        display as text
            column2 of 25%
                CalculatedReplacementValue
                    label is "CalculatedReplacementValue"
            column3 of 60%
        header3 of "Tax"
        three column
            column1 of 25%
                paragraph
                    AssetTaxCreditTable
                        label is "TaxCreditTable"
                    AssetTaxCreditTable.Description
                        no label
                        display as text
            column2 of 25%
                TaxCredit
            column3 of 50%
                FirstYearExpenseAmount
        blank line
        header3 of "TaxReportingFields"
        three column
            visible when (BookRegulationsExist)
                column1
                    BookRegulation
                        display as text
            column2
                ClassificationOfProperty
            column3
                DepreciableIntangible
        three column
            column1
                QualifiedImprovement
                PropertyType
                CostRecoverySystem
                BonusAmount
                Section179Expense
            column2
                Listed
                IndianReservation
                Used
                MineralReserves
                Section179
            column3
                ForeignProperty
                Farming
                LowIncomeHousing
                TransitionalRuleFlag
                NonConforming
