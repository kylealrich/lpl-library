IntercompanyBillingTransactionForm is a Form
    is primary
    title is "IntercompanyBillingTransaction"
    Layout
        single column
            IntercompanyBillingTransaction
                label is "Transaction"
                display as text
            Status
                display as text
            Description
                display as text
        paragraph
            FromCompany
                label is "BillFrom"
                display as text
            FromCompany.Name
                no label
                display as text
        paragraph
            ToCompany
                label is "BillTo"
                display as text
            ToCompany.Name
                no label
                display as text
        paragraph
            IntercompanyBillingRechargeItem
                label is "RechargeItem"
                display as text
            IntercompanyBillingRechargeItem.Description
                no label
                display as text
        single column
            TransactionDate
                display as text
            PostingDate
                display as text
        paragraph
            TransactionAmount
                display as text
            TransactionCurrency
                no label
                display as text
        paragraph
            CurrencyTable
                display as text
            CurrencyTable.Description
                no label
                display as text
        single column
            CurrencyExchangeRate
                label is "ExchangeRate"
                display as text
            ReceivablesRevenueAccount
                display as text
                compact format
            PayablesExpenseAccount
                display as text
                compact format
        blank line
        single column
            OriginatingTransaction.BusinessClassName
                label is "OriginatedFrom"
                display as text
        visible when (FromAP)
            two column
                OriginatingDocument(PayablesInvoice).Invoice
                    label is "Invoice"
                    display as text
                OriginatingTransaction(PayablesInvoiceDistribution).PayablesInvoiceDistribution
                    label is "Distribution"
                    display as text
        visible when (FromGL)
            two column
                OriginatingDocument(GeneralLedgerJournalControl).GeneralLedgerJournalControl
                    label is "Journal"
                    display as text
                OriginatingTransaction(GeneralLedgerTransaction).GeneralLedgerTransaction
                    label is "Transaction"
                    display as text
