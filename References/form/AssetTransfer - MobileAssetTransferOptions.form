MobileAssetTransferOptions is a Form
    title is "AssetTransferMain"
    Layout
        single column
            header3 of "<Asset.AssetDescriptionMessage>"
                display as text
            Asset.TagNumber
                label is "Tag"
                display as text
        two column table
            column1 of 50%
                Asset.AssetOwner.Name.FirstAndLastName
                    label is "Owner"
                    display as text
                TransferQuantity
            column2 of 50%
                AssetRel.EnteredQuantity
                    label is "Quantity"
                    display as text
                TransferDate
        header3 of "TransferTo"
        paragraph
            AssetTransferTo.ToAssetCompany
                label is "Company"
                when value changed
                    refresh AssetTransferTo.ToAssetType
                    refresh AssetTransferTo.ToAssetAccountGroup
                    refresh AssetTransferTo.ToAssetAccountingUnitGroup
            AssetTransferTo.ToAssetCompany.GeneralLedgerCompany.Name
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToTagNumber
                label is "Tag"
                show up to 10 characters
        paragraph
            AssetTransferTo.ToAssetGroup
                label is "AssetGroup"
                show up to 10 characters
            AssetTransferTo.ToAssetGroup.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToAssetLocation
                label is "Location"
                show up to 10 characters
            AssetTransferTo.ToAssetLocation.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToAssetType
                label is "Type"
                compact format
            AssetTransferTo.ToAssetType.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToAssetAccountGroup
                label is "AssetAccountGroup"
            AssetTransferTo.ToAssetAccountGroup.Description
                no label
                display as text
                show up to 10 characters
        paragraph
            AssetTransferTo.ToAssetDivision
                label is "Division"
            AssetTransferTo.ToAssetDivision.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToAssetOwner
                label is "AssetOwner"
                show up to 10 characters
            AssetTransferTo.ToAssetOwner.Name.FirstAndLastName
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToAssetAccountingUnitGroup
                label is "AssetDimensionGroup"
            AssetTransferTo.ToAssetAccountingUnitGroup.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetTransferTo.ToAssetAccountingUnit
                label is "DefaultTransactionDimensions"
                compact format
        header3 of "TransferFrom"
        two column table
            column1
                Asset.Company.AssetCompanyName
                    label is "Company"
                    display as text
                Asset.AssetLocation.AssetLocationName
                    label is "Location"
                    display as text
                Asset.AssetType.AssetTypeName
                    label is "Type"
                    display as text
                Asset.AssetAccountingUnitGroup.AssetDimensionGroup
                    label is "DimensionGroup"
                    display as text
            column2
                Asset.AssetGroup.AssetGroupName
                    label is "AssetGroup"
                    display as text
                Asset.AssetDivision.AssetDivisionName
                    label is "Division"
                    display as text
                Asset.AssetOwner.DerivedEmployeeIDName
                    label is "Owner"
                    display as text
                Asset.AssetAccountGroup.AssetAccountGroupName
                    label is "AccountGroup"
                    display as text
        visible when (IsAssetTypeTransfered)
            paragraph
                AssetType
                    label is "Type"
                    display as text
                    compact format
                AssetType.Description
                    no label
                    display as text
                    show up to 20 characters
