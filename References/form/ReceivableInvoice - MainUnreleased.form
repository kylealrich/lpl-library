MainUnreleased is a Form
    title is "Main"
    Layout
        four column distributed
            column1
                paragraph
                    visible when (not ReceivableInvoiceExists)
                        Customer
                            select is CustomerContextCompanyCustomerSelectList
                        Customer.Name
                            no label
                            display as text
                visible when (ReceivableInvoiceExists)
                    paragraph
                        Customer
                            display as text
                        Customer.Name
                            no label
                            display as text
            column2
                paragraph
                    visible when (IsReleased)
                        ReceivableInvoiceType
                            label is "Type"
                            display as text
                    visible when (IsUnreleased)
                        ReceivableInvoiceType
                            label is "Type"
            column3
                paragraph
                    ReceivableInvoice
                        label is "InvoiceNumber"
            column4
                paragraph
                    Description
        four column distributed
            column1
                paragraph
                    visible when (InvoiceEntryTemplate.Expanded)
                        ExpandedInvoiceEntrySignedTransactionAmount
                            label is "Amount"
                            display as text
                    visible when (not InvoiceEntryTemplate.Expanded)
                        TransientSignedTransactionAmount
                            label is "Amount"
                    OriginalCurrency
                        no label
                        display as text
            column2
                paragraph
                    TransactionDate
            column3
                paragraph
                    TransactionUserField1
                        label is "UserSortField"
            column4
                paragraph
                    CustomerPurchaseOrder
                        label is "PurchaseOrder"
        four column distributed
            column1
                paragraph
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
            column2
                paragraph
                    TermsCode
                    TermsCode.Description.Desc[1]
                        no label
                        display as text
                    TermsCode.Description.Desc[2]
                        no label
                        display as text
            column3
                paragraph
                    CreditDebitMemoReason
                        label is "MemoReason"
                        select is ReceivableReasonCodeMemoList
                    CreditDebitMemoReason.Description
                        no label
                        display as text
            column4
                paragraph
                    InvoiceTypeCode
                        select is CustomerInvoiceTypeCodeList
                    InvoiceTypeCode.Description
                        no label
                        display as text
        four column distributed
            column1
                visible when (not RecordExists)
                    TransientInvoiceEntryTemplate
                        label is "InvoiceEntryTemplate"
                visible when (RecordExists)
                    InvoiceEntryTemplate
            column2
                paragraph
                    RegimeCode
                    button of "Intrastat"
                        sub form is Intrastat
                        display as link
            column3
                ParallelReference
                    display as text
            column4
                paragraph
                    ProjectContract.Project.DisplayProject
                        label is "ProjectContract"
                        display as text
                    ProjectContract.Project.Description
                        no label
                        display as text
        four column distributed
            column1
                paragraph
                    visible when (Company.UseEWayBillNumber)
                        EWayBillNumber
                            display as text
            column2
                paragraph
                    visible when (ReceivableInvoiceType.MixedSignLines)
                        AlternateReceivableInvoiceType
                            label is "AlternateType"
            column3
                paragraph
                    visible when (IsCustomerOrder)
                        CustomerOrderRel.VATRegistrationNumber
                            label is "VATRegistrationNumber"
                    visible when (not IsCustomerOrder)
                        visible when (VATRegistrationNumberEntered)
                            CompanyCustomerRel.VATRegistrationNumber
                                label is "VATRegistrationNumber"
                                display as text
        four column distributed
            visible when (CompanyCustomerRel.Affiliate)
                CompanyCustomerRel.Affiliate
                    label is "Affiliate"
            visible when (Company.VoucherReference)
                VoucherReferenceNumber
        header2 of "<DueDateLabel>"
        four column distributed
            column1
                paragraph
                    visible when (ShowFirstDueDate)
                        FirstDueDate
                    visible when (IsUnreleased)
                        DueDate
                    visible when (IsTermsFieldsOverridden)
                        DueDate
                            display as text
            column2
                paragraph
                    visible when (IsUnreleased)
                        DiscountDate
                    visible when (IsTermsFieldsOverridden)
                        DiscountDate
                            display as text
            column3
                paragraph
                    visible when (IsUnreleased)
                        DiscountAmount
                            label is "Amount"
                    visible when (IsTermsFieldsOverridden)
                        DiscountAmount
                            label is "Amount"
                            display as text
            column4
                paragraph
                    visible when (IsUnreleased)
                        DiscountPercent
                            label is "Percent"
                    visible when (IsTermsFieldsOverridden)
                        DiscountPercent
                            label is "Percent"
                            display as text
