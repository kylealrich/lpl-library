ProcessingRules is a Form
    Layout
        four column distributed
            column1
                AgeDisputesRule
                    label is "AgeDisputes"
            column2
                DisputedTransFinanceCharged
                    label is "DisputeFinanceCharge"
            column3
                PercentOfBalanceToCreditLimit
                    label is "CreditReviewPercent"
            column4
                BillOfExchangeProcessing
                    label is "BillOfExchangeProcessingType"
        header2 of "Codes"
        three column distributed
            column1
                paragraph
                    TermsCode
                        select is TermsCodes
                    TermsCode.Description.Desc[1]
                        no label
                        display as text
                paragraph
                    DebitCreditMemoTermsCode
                        label is "MemoPaymentTerms"
                        select is TermsCodes
                    DebitCreditMemoTermsCode.Description.Desc[1]
                        no label
                        display as text
                paragraph
                    BankTransactionCode
                        label is "PaymentCode"
                        select is CashPayments
                    BankTransactionCode.Description
                        no label
                        display as text
            column2
                paragraph
                    ReceivableGeneralLedgerCode
                        select is ARCodes
                    ReceivableGeneralLedgerCode.Description
                        no label
                        display as text
                paragraph
                    ForeignEconomicRegulatoryCode
                    ForeignEconomicRegulatoryCode.Description
                        no label
                        display as text
                paragraph
                    ReceivableLockBox
                        label is "RemitLockbox"
                        select is ReceivableLockBoxRel.ReceivableLockBoxList
                    ReceivableLockBox.Name
                        no label
                        display as text
            column3
                paragraph
                    AgingCode
                        select is AgingCodes
                    AgingCode.Description
                        no label
                        display as text
                paragraph
                    TaxCode
                        select is TaxCodes
                    TaxCode.Description
                        no label
                        display as text
                TaxExempt
                    label is "PreventTaxCodeDefaulting"
        header2 of "ValueAddedTax"
        three column distributed
            column1
                VATCustomerReportType
                    label is "CustomerType"
            column2
                paragraph
                    VATRegistrationCountry
                        label is "Country/\\Jurisdiction"
                    VATRegistrationCountry.Name
                        no label
                        display as text
            column3
                paragraph
                    VATRegistrationNumber
                        label is "RegistrationNumber"
                    button of "Validate"
                        visible when (PerformVATValidation)
                        action is ValidateVATRegistrationNumber
                        display as link
        visible when (ValidateVAT)
            paragraph
                VATValidation.VATNumberValid
                    display as text
                VATValidation.ValidationDate
                    display as text
        header2 of "FinanceChargeOptions"
        three column distributed
            column1
                LatePaymentAndFinanceCharges
                    label is "ChargeType"
                paragraph
                    FinanceChargeDueDateGraceDays
                        label is "GraceDays"
                    PrintFinanceChargeDocument
                        label is "PrintNotice"
                AdministrativeFee
                    label is "FixedAdministrativeFee"
            column2
                FinanceChargeCycle
                    label is "CycleCode"
                    select is FinanceCycle
                paragraph
                    FinanceChargeCode
                        label is "RateCode"
                        select is FinanceCodes
                    FinanceChargeCode.Description
                        no label
                        display as text
                FinanceChargeCalculationMethod
                    label is "CalculationMethod"
            column3
                InvoiceMinimumFinanceCharge
                    label is "InvoiceMinimum"
                ChargeMinimumFinanceCharge
                    label is "ChargeCustomerMinimum"
                MinimumFinanceChargeAmount
                    label is "CustomerMinimum"
        header2 of "StatementOptions"
        three column distributed
            column1
                StatementRequired
                    label is "StatementRequired"
            column2
                paragraph
                    OpenItemStatementCycle
                        label is "OpenItemCycle"
                    text of "Or"
                    BalanceForwardStatementCycle
                        label is "BalanceForwardCycle"
        header3 of "OpenItemStatementOptions"
        three column distributed
            column1
                paragraph
                    PastDueOnlyStatement
                        label is "PastDueOnly"
                    OverCreditLimitStatement
                        label is "OverCreditLimitOnly"
            column2
                paragraph
                    ZeroBalanceStatement
                        label is "ZeroBalance"
                    CreditBalanceStatement
                        label is "CreditBalance"
