CreditReviewContextForm is a Form
    title is "CreditReviewTransaction"
    Layout
        four column distributed
            Company.RepresentativeText
                display as text
            visible when (IsNonBaseCurrency)
                Company.Currency
                    label is "Currency"
                    display as text
            ReceivableProcessLevel.RepresentativeText
                display as text
            Customer.RepresentativeText
                display as text
        visible when (DisplaySummarizedLines)
            four column distributed
                BatchNumber
                    display as text
                ReceivableInvoiceRel.AlternateReceivableInvoiceType
                    label is "Transaction"
                    display as text
                ReceivableInvoiceDetail.Invoice
                    display as text
                ReceivableInvoiceRel.TransientSignedTransactionAmount
                    label is "SummarizedTotal"
                    display as text
