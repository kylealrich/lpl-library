PeriodEndReconciliationMain is a Form
    title is "Main"
    Layout
        header2 of "ReconciliationOptions"
        visible when (IsConsolidatedGroupStandaloneOrNonAccount)
            paragraph
                PeriodEndReconciliation.ReconciliationAccount.Description
                    display as text
                    show up to 100 characters
            visible when (ReconciliationAccountPurposeEntered)
                paragraph
                    PeriodEndReconciliation.ReconciliationAccount.Purpose
                        label is "Purpose"
                        display as text
                        use text area of 3 lines
        visible when (IsConsolidatedGroupOrStandalone)
            two column distributed
                column1
                    paragraph
                        PeriodEndReconciliation.ReconciliationAccount.ReconcileFrequency
                            display as text
                        visible when (PeriodEndReconciliation.ReconciliationAccount.ReconcileFrequency.Quarterly)
                            PeriodEndReconciliation.ReconciliationAccount.PeriodWithinQuarter
                                display as text
                    PeriodEndReconciliation.ReconciliationAccount.Priority
                        display as text
                    paragraph
                        ReconciliationAccountGroup
                            display as text
                            select is ReconciliationAccountGroupNoChildren
                        ReconciliationAccountGroup.Description
                            no label
                            display as text
                        visible when (PeriodEndReconciliation.ReconciliationAccount.DisplayParentReportGroupStructure)
                            text of "(<PeriodEndReconciliation.ReconciliationAccount.ParentReportGroupStructure>)"
                                italics
                    paragraph
                        FinanceTeam
                        FinanceTeam.Description
                            no label
                            display as text
                    PeriodEndReconciliation.ReconciliationAccount.RequireSupportingDoco
                        label is "RequiresSupportingDocumentation"
                        display as text
                    paragraph
                        ReconciliationPolicy
                            display as text
                        ReconciliationPolicy.Description
                            no label
                            display as text
                column2
                    paragraph
                        PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType
                            display as text
                        visible when (PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType.Cash)
                            visible when (LevelType.Account)
                                PeriodEndReconciliation.ReconciliationAccount.CashManagementAccount
                                    label is "CashAccount"
                                    display as text
                    PeriodEndReconciliation.ReconciliationAccount.Risk
                        display as text
                    paragraph
                        visible when (ShowSelectStatusOpenActiveDetailTasks)
                            CloseTask
                                select is TaskSelect
                        visible when (ShowSelectStatusOpenSamePeriodScheduledOrOpen)
                            CloseTask
                                select is CloseTaskForClosePeriodTaskScheduledOrOpenInSamePeriodRel.OpenPeriodTaskSelect
                        visible when (ShowSelectStatusInProcess)
                            CloseTask
                                select is CloseTaskForClosePeriodTaskOpenInSamePeriodRel.OpenPeriodTaskSelect
                        visible when (ShowNoSelectStatusPendingApprovalOrClosed)
                            CloseTask
                        CloseTask.TaskName
                            no label
                            display as text
                    paragraph
                        AssignedResource
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
                    paragraph
                        PeriodEndReconciliation.ReconciliationAccount.RequiresApproval
                            display as text
                        visible when (PeriodEndReconciliation.ReconciliationAccount.RequiresApproval)
                            ApprovalCode
                                display as text
                                select is ApprovalCodesWithLevels
                    PeriodEndReconciliation.ReconciliationAccount.Active
                        display as text
