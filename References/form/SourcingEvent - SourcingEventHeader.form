SourcingEventHeader is a Form
    title is "Event-Header"
    Layout
        single column
            Description
                use text area
                display as required when (DescriptionAndSourcingEventTypeRequired)
        three column distributed
            EventReference
                label is "Reference"
            SourcingEventType
                label is "Type"
                select is SupplierEventTypes
                display as required when (DescriptionAndSourcingEventTypeRequired)
            paragraph
                Buyer
                    display as required when (BuyerRequired)
                Buyer.Employee.PresentationNameSnapshot
                    no label
                    display as text
        three column distributed
            paragraph
                CurrencyCode
                AllowResponseInOtherCurrency
                    label is "AllowResponses_in_aDifferentCurrency"
            paragraph
                Category
                    select is BuyerCategories
                Category.Description
                    no label
                    display as text
            paragraph
                SubCategory
                    select is BuyerSubCategories
                SubCategory.Description
                    no label
                    display as text
        three column distributed
            PostingOptions
                label is "SupplierPortalPostingOptions"
            CreateAmendments
            visible when (not PostingOptions.DoNotDisplayOnPortal)
                AllowSupplierQandA
                    display as required when (SourcingEventQandASetExists)
                    when value changed
                        refresh QandAOpenDateRequired
                        refresh QandACloseDateRequired
        three column distributed
            visible when (DisplayOnPortal)
                DisplayPlanHoldersList
            visible when (DisplayOnPortal)
                OnlyNotifyResponders
                    label is "SendAmendmentNotificationsOnly_toRespondingSuppliers"
            visible when (not PostingOptions.DoNotDisplayOnPortal)
                visible when (UseBidTabulation)
                    DisplayBidTabulation
        header3 of "Dates"
        single column
            InformalQuote
                label is "DatesNotRequiredOnEvent"
                when value changed
                    refresh DisputeCloseDateRequired
                    refresh OpenCloseDateRequired
                    refresh QandACloseDateRequired
                    refresh QandAOpenDateRequired
        visible when (not InformalQuote)
            three column
                OpenDate
                    label is "Open"
                    display as required when (OpenCloseDateRequired)
                    when value changed
                        refresh QandAOpenDateRequired
                CloseDate
                    label is "Close"
                    display as required when (OpenCloseDateRequired)
                    when value changed
                        refresh QandACloseDateRequired
                DisputeCloseDate
                    label is "DisputeClose"
                    display as required when (DisputeCloseDateRequired)
            three column
                visible when (AllowSupplierQandA)
                    QandAOpenDate
                        label is "Q&AOpen"
                        display as required when (QandAOpenDateRequired)
                    QandACloseDate
                        label is "Q&AClose"
                        display as required when (QandACloseDateRequired)
                PreviewDate
                    label is "Preview"
        three column
            visible when (BestAndFinalStarted)
                BestAndFinalCloseDate
            visible when (StepTwoStarted)
                StepTwoCloseDate
                    label is "Pricing_(StepTwo)CloseDate"
            visible when (HasBuyerWeighting)
                BuyerWeightingFinalDate
        header3 of "ResponseOptions"
        four column distributed
            visible when (DisplayOnPortal)
                Sealed
                    label is "SealedBid"
                TwoStepBidding
            RequireBidBond
            visible when (RequireBidBond)
                BidBondPercent
        four column distributed
            BestAndFinalOffer
            RequireFullQuantity
                label is "RequireFullQuantityOnLines"
            visible when (DisplayOnPortal)
                LowestBidOption
                    when value changed
                        refresh DisplayLowestBidAmountRequired
            visible when (DisplayOnPortal)
                AllowTermsToBeNegotiated
        four column distributed
            RequireAllLines
                label is "RequireResponseForAllLines"
                display as required when (WeightingCriteria.PriceWeighting entered)
            visible when (DisplayOnPortal)
                DisplayLowestBidAmount
                    label is "DisplayLowestBidAmountToSupplier"
                    display as required when (DisplayLowestBidAmountRequired)
            AllowAddOnCharge
            AllowAlternateResponses
        two column distributed
            VendorItemProcessing
            DeliveryDateResponseRequired
        header3 of "LineDefaults"
        four column distributed
            OutputType
            visible when (OutputType.PO)
                RequestedDeliveryDate
                paragraph
                    DefaultShipTo
                        label is "ShipTo"
                    DefaultShipTo.Name
                        no label
                        display as text
            button of "<DerivedAwardDefaults>"
                visible when (EffectiveDateValid)
                link is DefaultHeaderAwardInformation
                display as link
        three column
            DefaultAccount
                compact format
            AssetInformation.Asset
            AssetInformation.AssetTemplate
        header3 of "ResponseAlerts"
        two column
            paragraph
                YellowAlert
                    label is "YellowAlert"
                text of "DaysBeforeEventCloseDate"
            paragraph
                RedAlert
                    label is "RedAlert"
                text of "DaysBeforeEventCloseDate"
            paragraph
                EstimatedTotal
                    label is "EstimatedTotal"
