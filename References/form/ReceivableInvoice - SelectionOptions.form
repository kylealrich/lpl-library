SelectionOptions is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is ReceivableInvoiceContext
        background is theme color
    restrict action Create
        when (IsInvoiceBatchReleased)
    restrict action Create
        when (Origin.IntercompanyBilling)
    restrict action SpeedEntry
    restrict action RefreshData
    MainUnreleased is a Panel
        title is "Main"
        visible when (IsUnreleased)
        form is MainUnreleased
    Main is a Panel
        visible when (IsReleased)
        form is Main
    Expanded is a Panel
        form is Expanded
    InvoiceDetail is a Panel
        title is "InvoiceDetails"
        visible when (ShowInvoiceDetail)
        list is ReceivableInvoiceDetailRel.ListReceivableInvoiceDetail
    LineItems is a Panel
        visible when (ShowLineItems)
        list is ReceivableInvoiceLineItemRel.ListReceivableInvoiceLineItem
    Lines is a Panel
        title is "Lines<DerivedLinesIndicator>"
        visible when (ShowReceivableInvoiceLinesAndAddOnCharges)
        list is ReceivableInvoiceLine set.ReceivableInvoiceLines
    AddOnCharges is a Panel
        title is "AddOnCharges<DerivedHeaderAddOnChargesIndicator>"
        visible when (ShowReceivableInvoiceLinesAndAddOnCharges)
        list is HeaderAddOnChargesRel.AddOnCharges
    ViewDistributions is a Panel
        title is "Distributions"
        visible when (ShowReceivableInvoiceLinesAndAddOnCharges)
        list is ReceivableGLDistributionDetailTypeRel.ExpandedInvoiceEntryTemplateDistributionList
    Distributions is a Panel
        visible when (not ShowReceivableInvoiceLinesAndAddOnCharges)
        list is ReceivableGLDistributionDetailTypeRel.ReceivableInvoiceDistributionList
    PendingObligations is a Panel
        visible when (IsReceivableInvoiceObligation)
        mouse over text is "MaintainPaymentObligations"
        list is ReceivableInvoiceObligationRel.ReceivableInvoiceObligationList
    Disputes is a Panel
        visible when (IsOpenDisputes)
        mouse over text is "MaintainOpenDisputes"
        list is OpenReceivableInvoiceDisputeRel.Disputes
    Comments is a Panel
        list is CompanyCustomerCommentRel.InvoiceTransactionCommentsList
    Attachments is a Panel
        list is ReceivableInvoiceAttachment set.primary
    OriginatingDocuments is a MultiListPanel
        visible when (ShowOriginatingDocuments)
        list is IntercompanyBillingDocumentRel.OriginatingJournalControlRel.GeneralLedgerJournalList
            visible when (OriginatingICBIsFromGL)
        list is IntercompanyBillingDocumentRel.OriginatingInvoiceRel.PayablesInvoiceList
            visible when (OriginatingICBIsFromInvoice)
        list is IntercompanyBillingDocumentRel.ReleasedDocumentList
