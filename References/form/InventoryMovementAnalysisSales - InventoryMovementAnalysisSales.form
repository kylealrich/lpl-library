            Company
            Company.Name
                no label
                display as text
        three column
            column1
                paragraph
                    Location
                        show up to 10 characters
                    Location.Name
                        no label
                        display as text
            column2
                text of "\\or"
                    bold
            column3
                paragraph
                    ReportGrp
                        label is "ReportGroup"
                    ReportGrp.Name
                        no label
                        display as text
        blank line
        two column
            paragraph
                SalesMajcl
                    label is "MajorSalesClass"
                    show up to 10 characters
                SalesMajcl.Description
                    no label
                    display as text
            paragraph
                SalesMincl
                    label is "MinorSalesClass"
                    show up to 10 characters
                SalesMincl.Description
                    no label
                    display as text
        two column
            paragraph
                FromPeriod
                    label is "FromPeriod"
                FromYear
                    label is "Year"
            paragraph
                ThruPeriod
                    label is "ToPeriod"
                ThruYear
                    label is "Year"
        single column
            UpdateOption
                label is "Update"
            Class1Pct
                label is "MovementClass1Percentage"
            Class2Pct
                label is "MovementClass2Percentage"
            Class3Pct
                label is "MovementClass3Percentage"
            PriceCutoff
                label is "SalesPriceCutoff"
                show up to 5 characters
            IncludeInactive
                label is "IncludeInactiveItems"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InventoryMovementAnalysisSalesReport_RDG
            column2 of 25%
                InventoryMovementAnalysisSalesReport_XPT
