IDMTemplateForm is a Form
    is primary
    propagate as a drill
    title is "IDMTemplate"
    restrict action CreateEmailTemplate
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Layout
        single column
            FinanceEnterpriseGroup
                display as text
            Name
            paragraph
                Description
                    use text area of 2 lines
            paragraph
                visible when (OutputTemplate)
                    OutputFormat
                UseRichText
                visible when (OutputFormat.WordDocument)
                    text of "Warning:<DocxNotSupportedByIDMPrint>"
                        color of blue
            paragraph
                DocumentTemplate.File
                    label is "Attachment"
                visible when (IDMUniqueId entered)
                    button of "View"
                        link is external "<RetrieveUrl>"
                        display as link
            Active
        visible when (OutputTemplate)
            header3 of "IDMDetails"
            single column
                OutputTemplateMessage
                    display as text
                IDMDocumentType
                    label is "OutputDocumentType"
                    display as text
