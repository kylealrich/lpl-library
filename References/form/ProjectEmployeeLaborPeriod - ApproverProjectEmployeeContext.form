ApproverProjectEmployeeContext is a Form
    Layout
        two column
            column1
                Employee.ResourcePicture.File
                    no label
                    align as label
                    display as image up to 6 lines
                        missing image is random background
            column2
                paragraph
                    text of "<this instance(locale of blank).Employee.Name.PreferredFirstAndLastName>"
                        header2
                        align as label
                    Employee
                        header3
                        display as text
                    DateRange.Begin
                        label is "PeriodBeginDate"
                        header3
                        display as text
                    DateRange.End
                        label is "PeriodEndDate"
                        header3
                        display as text
                    Status
                        no label
                        display as tag
                            color of blue when (IsBlueStatusTag)
                            color of green when (IsGreenStatusTag)
                            color of yellow when (IsYellowStatusTag)
                    AdjustmentPendingMessage
                        no label
                        display as tag
                            color of yellow when (AdjustmentPendingTrue)
                    button of "EffortCertificationPeriod"
                        link is CertifyEffortFormLink
                        display as link
                visible when (HROrganization.first FinanceEnterpriseGroupRel.EnterpriseProjectStructure.LaborDistributionApproval)
                    paragraph
                        visible when (first ProjectAssignmentLaborRel.SubmittedActor entered)
                            first ProjectAssignmentLaborRel.SubmittedActor
                                label is "SubmittedBy"
                                display as text
                        visible when (first ProjectAssignmentLaborRel.ApprovalActor entered)
                            first ProjectAssignmentLaborRel.ApprovalActor
                                label is "ApprovedBy"
                                display as text
                        visible when (first ProjectAssignmentLaborRel.SubmittedRedistributionActor entered)
                            first ProjectAssignmentLaborRel.SubmittedRedistributionActor
                                label is "RedistributionSubmittedBy"
                                display as text
                        visible when (first ProjectAssignmentLaborRel.ApprovalRedistributionActor entered)
                            first ProjectAssignmentLaborRel.ApprovalRedistributionActor
                                label is "RedistributionApprovedBy"
                                display as text
                visible when (not HROrganization.first FinanceEnterpriseGroupRel.EnterpriseProjectStructure.LaborDistributionApproval)
                    paragraph
                        visible when (first ProjectAssignmentLaborRel.ApprovalActor entered)
                            first ProjectAssignmentLaborRel.ApprovalActor
                                label is "ApprovedBy"
                                display as text
