ChangeThisManufacturer is an ActionForm
    action is ChangeThisManufacturer
    title is "ChangeManufacturer"
    Layout
        display as text
            paragraph
                ItemGroup
                ItemGroup.Description
                    no label
            paragraph
                Manufacturer.ManufacturerCode
                Manufacturer.ManufacturerDivision
                Description
        two column
            NewManufacturer
                compact format
            NewManufacturer.Description
                display as text
        single column
            Inactivate
                label is "InactivateCurrentManufacturer"
            text of "WillChangeManufacturerOnTheFollowingIfChecked"
                bold
            ChangeItems
                label is "Items"
            ChangeItemLocations
                label is "ItemLocations"
            ChangeVendorItems
                label is "VendorItems"
            ChangeSpecialItems
                label is "SpecialItemsOnContractsAndInterfaceContracts"
            visible when (GPOSuppliersExist)
                ChangeGPOSuppliers
                    label is "GPOSupplierMapping"
