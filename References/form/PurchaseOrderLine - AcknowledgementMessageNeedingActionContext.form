AcknowledgementMessageNeedingActionContext is a Form
    Layout
        four column distributed
            column1
                display as text
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                    paragraph
                        PurchaseOrder
                        PurchaseOrderLine
                            label is "Line"
                        PurchaseOrder.PurchaseOrderRevision
                            label is "Revision"
                    paragraph
                        PurchaseOrderRevisionRel.AcknowledgementDate
                            label is "AcknowledgementDate"
            column2
                display as text
                    PurchaseOrder.Vendor.RepresentativeText
                    PurchaseOrder.Buyer.RepresentativeText
                        label is "Buyer"
                    EmployeeRel.DerivedEmployeeIDName
                        label is "Processor"
            column3
                display as text
                    PurchaseOrder.PurchaseOrderDate
                    EarlyDeliveryDate
                        label is "DeliveryDate"
                    PurchaseOrder.MobileTotalWithCurrencyDisplay
                        label is "PurchaseOrderTotal"
            column4
                display as text
                    PurchaseOrder.DerivedPurchaseOrderStatus
                        label is "POStatus"
                    DerivedStatus
                        label is "LineStatus"
