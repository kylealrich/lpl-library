WarehouseZoneFormContext is a Form
    Layout
        visible when (not RecordExists)
            two column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        WarehouseZone
                        Description
                column2
                    paragraph
                        InventoryLocation
                            label is "InventoryLocation"
                        InventoryLocation.Name
                            no label
                            display as text
                    paragraph
                        Active
        visible when (RecordExists)
            two column distributed
                column1
                    paragraph
                        Company.DerivedCompanyDisplay
                            label is "Company"
                            display as text
                    paragraph
                        WarehouseZone
                            display as text
                        Description
                column2
                    paragraph
                        InventoryLocation.DerivedInventoryLocationIDName
                            label is "InventoryLocation"
                            display as text
                    paragraph
                        Active
