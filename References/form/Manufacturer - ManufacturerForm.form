ManufacturerForm is a Form
    is primary
    title is "Manufacturer"
    Actions
        navigation is RelatedRecords
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            label is "_"
        action is save
            label is "_"
        action is Delete
            label is "_"
        action is refresh
            label is "_"
    Layout
        paragraph
            visible when (not ItemGroupExist)
                ItemGroup
                ItemGroup.Description
                    no label
                    display as text
            visible when (ItemGroupExist)
                ItemGroup.ItemGroupDescription
                    label is "ItemGroup"
                    display as text
        paragraph
            visible when (ManufacturerCodeExist)
                Manufacturer.ManufacturerCode
                    display as text
            visible when (not ManufacturerCodeExist)
                Manufacturer.ManufacturerCode
                    display as required
            visible when (ManufacturerDivisionExist)
                Manufacturer.ManufacturerDivision
                    display as text
            visible when (not ManufacturerDivisionExist)
                visible when (CodeOnly)
                    Manufacturer.ManufacturerDivision
                        display as text
                visible when (not CodeOnly)
                    Manufacturer.ManufacturerDivision
            Description
            Active
        single column
            LabelerIdentificationCode
            GlobalLocationNumber
                display as text
            DunAndBradstreetNumber
