PhysicalInventoryFreezeBinForm is a Form
    is primary
    title is "EnterCounts"
    Layout
        display as text
            paragraph
                PhysicalInventorySelect.Company.DerivedCompanyDisplay
                    label is "Company"
            two column
                paragraph
                    PhysicalInventorySelect.DisplaySelectID
                        label is "SelectID"
                PhysicalInventorySelect.Status
            blank line
            two column
                PhysicalInventoryFreeze.PhysicalInventoryFreezePage
                    label is "Page"
                PhysicalInventoryFreeze.PhysicalInventoryFreezeLine
                    label is "Line"
        paragraph
            visible when (RecordExists)
                InventoryLocation.DerivedInventoryLocationIDName
                    label is "InventoryLocation"
                    display as text
            visible when (RecordNotExists)
                InventoryLocation
                InventoryLocation.Name
                    no label
                    display as text
        paragraph
            visible when (RecordExists)
                PhysicalInventoryFreeze.Item
                    display as text
            visible when (RecordNotExists)
                PhysicalInventoryFreeze.Item
            display as text
                PhysicalInventoryFreeze.Item.Description
                    no label
                PhysicalInventoryFreeze.Item.Description2
                    no label
        visible when (RecordExists)
            visible when (PhysicalInventoryFreeze.ItemLocation.BinTracked)
                paragraph
                    Bin
                        display as text
                    PhysicalInventoryBin
                        display as text
            visible when (PhysicalInventoryFreeze.ItemLocation.LotTracked.LotRequiredAtReceipt)
                PhysicalInventoryFreeze.Lot
                PhysicalInventoryFreeze.Sublot
            visible when (PhysicalInventoryFreeze.ItemLocation.SerialTracked.SerialRequiredAtReceipt)
                paragraph
                    PhysicalInventoryFreeze.Serial
                        display as text
        visible when (RecordNotExists)
            visible when (PhysicalInventoryFreeze.ItemLocation.BinTracked)
                paragraph
                    Bin
                    PhysicalInventoryBin
            visible when (PhysicalInventoryFreeze.ItemLocation.LotTracked.LotRequiredAtReceipt)
                paragraph
                    PhysicalInventoryFreeze.Lot
                    PhysicalInventoryFreeze.Sublot
            visible when (PhysicalInventoryFreeze.ItemLocation.SerialTracked.SerialRequiredAtReceipt)
                paragraph
                    PhysicalInventoryFreeze.Serial
        paragraph
            visible when (not PhysicalInventorySelect.Status.SelectIDUpdated)
                EnteredCount
            visible when (PhysicalInventorySelect.Status.SelectIDUpdated)
                EnteredCount
                    display as text
            visible when (not CountInTransactionUOM)
                EnteredUOM
                    select is ValidTransactionUnitsOfMeasure
            visible when (CountInTransactionUOM)
                EnteredUOM
                    display as text
        paragraph
            visible when (PhysicalInventoryFreeze.RecordExistsForCatchWeightItem)
                visible when (not PhysicalInventorySelect.Status.SelectIDUpdated)
                    SecondaryEnteredCount
                    SecondaryEnteredUOM
                visible when (PhysicalInventorySelect.Status.SelectIDUpdated)
                    SecondaryEnteredCount
                        display as text
                    SecondaryEnteredUOM
                        display as text
            visible when (false)
                PhysicalInventoryFreeze.TransientDisplayUOM
                    display as text
                PhysicalInventoryFreeze.TransientDisplayCount
                    display as text
