ProjectAssignmentCreateForm is an ActionForm
    action is Create
    title is "ProjectAssignment"
    Layout
        paragraph
            Project
                label is "<FinanceEnterpriseGroup.ProjectLabel>"
            Project.Description
                no label
                display as text
        paragraph
            Project.ProjectDateRange.BeginDate
                label is "<FinanceEnterpriseGroup.ProjectLabel>StartDate"
                display as text
            Project.ProjectDateRange.EndDate
                label is "<FinanceEnterpriseGroup.ProjectLabel>EndDate"
                display as text
        paragraph
            Employee
                select is ActiveProjectEmployeeList
            Employee.Employee.Name.PreferredFirstAndLastName
                no label
                display as text
        paragraph
            Employee.ProjectLaborSchedule
                display only
            Employee.ProjectLaborSchedule.Description
                no label
                display as text
        paragraph
            ProjectRole
            ProjectRole.Description
                display as text
        two column
            ProjectDateRange.BeginDate
                label is "BeginDate"
            ProjectDateRange.EndDate
                label is "EndDate"
        two column
            visible when (not Employee.ExcludeFromLabor)
                CommittedEffort
            BillableRate
        visible when (not Employee.ExcludeFromLabor)
            single column
                FinanceCodeBlock
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                FinanceCodeBlockSetBlanks
                    no label
            visible when (not Project.FringeBurden.No)
                paragraph
                    BurdenCode
                    BurdenCode.Description
                        no label
                        display as text
                    BurdenCode.Rate
                        display as text
                BurdenCodeBlock
                    label is "FringeBurdenFinanceStructure"
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                BurdenCodeBlockSetBlanks
            visible when (Employee.FringeEncumbrance)
                single column
                    FringeEncumbranceCodeBlock
                        compact format
