CashApplication is a CompositeForm
    title is "CashApplication<PaymentNumberApplicationInProcessTitle>"
    context form is CashApplicationContextForm
        background is theme color
    restrict action Open.ProcessSelections
    restrict action Unreleased.CreateDistribution
    restrict action Unreleased.Delete
    restrict action Unreleased.ProcessSelections
    restrict action Unreleased.ReleaseBatch
    restrict action SelectForAPInterface
    restrict action RefreshData
    Actions
        action is UpdateUnpostedApplicationGeneralLedgerDates
            action icon is edit
            hide when invalid
        navigation is CashApplicationContextFormShowContextFormOnLeftNav
            action icon is preview
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
            hide when invalid
    InvoiceApplicationNA is a Panel
        visible when (not CompanyCustomerRel.NationalAccountIndicator.No)
        list is NationalAccountTransactionsRel.CashApplicationList
    InvoiceApplication is a Panel
        visible when (not ReceivableCompanyRel.IsApplyCashAcrossReceivableCompanies)
        list is TransactionsForCustomerRel.CashApplicationList
    InvoiceApplicationAcrossCompanies is a Panel
        title is "InvoiceApplication"
        visible when (ReceivableCompanyRel.IsApplyCashAcrossReceivableCompanies)
        list is TransactionsForCustomerAcrossCompanyRel.CashApplicationList
    PendingSelections is a Panel
        title is "Selected_(<NumberOfReceivableApplicationSelect>)"
        visible when (HasSelectApplications)
        list is ReceivableApplicationSelectRel.ReviewReceivableApplicationSelectList
    PriorApplications is a Panel
        visible when (HasApplications)
        list is ReceivableApplicationRel.PaymentApplications
    EditPaymentInfo is a Panel
        visible when (UnreleasedOrUnassigned)
        form is EditPaymentInfo
