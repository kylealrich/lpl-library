PortalAccountInformationContext is a Form
    disable field options
    Layout
        visible when (PortalContact)
            visible when (Customer entered)
                display as text
                    header3 of "CustomerInformation"
                    four column distributed
                        column1
                            Customer.Name
                                label is "Customer"
                            Customer.Contact
                            Customer.ContactTitle
                                label is "Title"
                            Customer.TaxID
                                label is "TaxID"
                        column2
                            paragraph
                                Customer.PhoneNumber.SubscriberNumber
                                    label is "PhoneNumber"
                                Customer.PhoneNumber.Extension
                                    label is "Ext"
                                button of icon.phone
                                    visible when (Customer.PhoneNumber.SubscriberNumber entered)
                                    link is "tel:<Customer.PhoneNumber.SubscriberNumber>"
                            paragraph
                                Customer.EmailAddress
                                button of icon.mail
                                    visible when (Customer.EmailAddress entered)
                                    link is "mailto:<Customer.EmailAddress>"
                            paragraph
                                button of "<Customer.URLAddress>"
                                    link is "<Customer.URLAddress>"
                                    label is "URLAddress"
                                    display as link
                        column3
                            single column
                                FullAddressDisplay
                        column4
                            visible when (not CompanyCustomerRel.NationalAccountIndicator.Parent)
                                paragraph
                                    CompanyCustomerRel.CurrentBalance
                                    CompanyCustomerRel.Currency
                                        no label
                                paragraph
                                    CompanyCustomerRel.OpenOrderAmount
                                        label is "OpenOrders"
                                    CompanyCustomerRel.Currency
                                        no label
                                        display as text
                                CompanyCustomerRel.LastPaymentDate
                                CompanyCustomerRel.LastInvoiceDate
                                visible when (CompanyCustomerRel.LastStatementDate entered)
                                    CompanyCustomerRel.LastStatementDate
                            visible when (CompanyCustomerRel.NationalAccountIndicator.Parent)
                                paragraph
                                    NationalAccountBalanceRel.CurrentBalance
                                    CustomerGroup.Currency
                                        no label
                                paragraph
                                    NationalAccountBalanceRel.OpenOrderAmount
                                        label is "OpenOrders"
                                    CustomerGroup.Currency
                                        no label
                                        display as text
                                LastPaymentDateForNationalAccount
                                LastInvoiceDateForNationalAccount
                                visible when (LastStatementDateForNationalAccount entered)
                                    LastStatementDateForNationalAccount
            visible when (Customer not entered)
                text of "CustomerAccessRequestIsPendingApproval"
                    bold
                    italics
                blank line
