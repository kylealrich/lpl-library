ProcurementCardStatementTransactionCommentForm is a Form
    is primary
    propagate as a drill
    title is "ProcurementCardTransactionComment<Title>forTransaction<ProcurementCardStatementTransaction.TransactionNumber>"
    restrict action UpdateComments
    restrict action SystemCreate
    Layout
        header2 of "StatementTransactionInformation"
        display as text
            three column distributed
                column1
                    paragraph
                        ProcurementCardStatement
                            label is "Statement"
                        ProcurementCardStatementTransaction.TransactionNumber
                    ProcurementCardStatementTransaction.ProcurementCardNumber.DisplayProcurementCardNumber
                        label is "CardNumber"
                column2
                    ProcurementCardStatementTransaction.DerivedMerchantName
                        label is "Merchant"
                    ProcurementCardProgram.DerivedCardProgramName
                        label is "ProgramName"
                column3
                    ProcurementGroup.DerivedProcurementGroupName
                        label is "ProcurementGroup"
                    ProcurementCardStatementTransaction.Company.DerivedCompanyIDName
                        label is "Company"
        header2 of "Comments_and_Attachments"
        single column
            Title
            CommentText
                use text area of 12 lines
        paragraph
            Attachment.File
            Attachment.Title
            visible when (false)
                Attachment.MimeType
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
