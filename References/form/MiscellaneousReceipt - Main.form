Main is a Form
    Layout
        visible when (RecordExists)
            four column distributed
                column1
                    visible when (not MobileSupplyChainConfigurationRel.MiscellaneousReceivingVendorOptions.Hide)
                        Supplier
                            select is MSCMVendorList
                            display as required when (MobileSupplyChainConfigurationRel.MiscellaneousReceivingVendorOptions.DisplayAndRequired)
                    visible when (not MobileSupplyChainConfigurationRel.MiscellaneousReceivingPONumberOptions.Hide)
                        PurchaseOrder
                            display as required when (MobileSupplyChainConfigurationRel.MiscellaneousReceivingPONumberOptions.DisplayAndRequired)
                    visible when (not MobileSupplyChainConfigurationRel.MiscellaneousReceivingPackingSlipNumberOptions.Hide)
                        PackingSlipNumber
                            display as required when (MobileSupplyChainConfigurationRel.MiscellaneousReceivingPackingSlipNumberOptions.DisplayAndRequired)
                    visible when (MobileSupplyChainConfigurationRel.MiscellaneousDisplayReceivingRejectDelivery)
                        RejectDelivery
                column2
                    DeliveryNoteCode
                    DeliveryNote
                        use text area of 3 lines
                column3
                    visible when (DisplayWarehouseStorageLocation)
                        WarehouseInformation.WarehouseStorageLocation
                            select is ActiveWarehouseStorageLocations
                            display as required when (MobileSupplyChainConfigurationRel.WarehouseStorageLocationOptions.DisplayAndRequired)
                    visible when (DisplayWarehouseDock)
                        WarehouseInformation.WarehouseDock
                            select is ActiveOpenOrUnloadingWarehouseDockRel.WarehouseDockList
                            display as required when (MobileSupplyChainConfigurationRel.WarehouseDockOptions.DisplayAndRequired)
                            when value changed
                                WarehouseInformation.WarehouseDoor =  first DefaultWarehouseDoorRel.WarehouseDoor
                                    when (DisplayWarehouseDoor)
                    visible when (DisplayWarehouseDoor)
                        WarehouseInformation.WarehouseDoor
                            select is ActiveWarehouseDoorRel.WarehouseDoorList
                            display as required when (MobileSupplyChainConfigurationRel.WarehouseDoorOptions.DisplayAndRequired)
                column4
                    visible when (DisplayTotalPackageWeight)
                        TotalPackageWeight
                            label is "TotalPackageWeight(lbs)"
                            display as required when (MobileSupplyChainConfigurationRel.TotalPackageWeightOptions.DisplayAndRequired)
        visible when (not RecordExists)
            two column
                column1
                    Company
                    DeliverToCompanyLocation.DeliverToCompany
                        label is "DeliverToCompany"
                        display as required
                    TimeStarted
                        label is "ReceiptDate"
                column2
                    MobileSupplyChainLocation
                        label is "Location"
                    DeliverToCompanyLocation.DeliverToLocation
                        label is "DeliverToLocation"
                        display as required
