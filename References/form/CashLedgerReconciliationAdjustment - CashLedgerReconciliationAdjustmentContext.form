CashLedgerReconciliationAdjustmentContext is a Form
    title is "ReconciliationVarianceAdjustment"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        CashCode.CashCodeAndDescription
                            label is "CashCode"
                        CashCode.Currency
                            no label
                    Status
                    paragraph
                        ReconciliationData.CurrencyAmount
                            label is "ReconciledAmount"
                        IssuedBankAmount
                            label is "IssuedAmount"
                        DerivedBankDifferenceAmount
                            label is "Difference"
                        BalanceAmount
                            label is "RemainingBalance"
                    paragraph
                        visible when (BudgetEditInProgress)
                            text of "BudgetEditsInProgress"
                                bold
                                color of red
                        visible when (BudgetEditFailure)
                            text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                                bold
                                color of red
                column2
                    BankTransactionCode.BankTransactionCodeName
                        label is "TransactionCode"
                column3
                    paragraph
                        TransactionNumber
                        DerivedTransactionIdentifier
                            label is "TransactionIdentifier"
