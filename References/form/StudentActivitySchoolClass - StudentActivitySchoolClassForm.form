StudentActivitySchoolClassForm is a Form
    is primary
    title is "<mode>Class"
    Actions
        action is Create
        action is AssignClassToStudent
            hide when invalid
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    Layout
        two column
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivitySchoolClass
                        label is "Class"
                paragraph
                    TeacherLastName
                paragraph
                    Active
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    Description
                paragraph
                    TeacherFirstName
