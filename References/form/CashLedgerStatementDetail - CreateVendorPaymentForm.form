CreateVendorPaymentForm is a Form
    use for action CreateVendorPayment
    title is "CreateVendorPayment"
    Layout
        paragraph
            CashCode
                display as text
            CashCode.Currency
                no label
                display as text
            CashLedgerStatement
                label is "StatementNumber"
                display as text
        single column
            CashLedgerStatementDetail
                label is "LineNumber"
        blank line
        single column
            TransactionDate
        two column
            BankTransactionCode
                label is "PayCode"
            BankTransactionCode.Description
                no label
                display as text
        two column
            Vendor
            Vendor.VendorName
                no label
                display as text
        single column
            AmountTransactionCurrency
                label is "Amount"
        two column
            ProcessLevel
            ProcessLevel.Name
                no label
                display as text
        two column
            PayGroup
            PayGroup.Name
                no label
                display as text
        two column
            VendorLocation
                label is "RemitToLocation"
            VendorLocation.VendorName
                no label
                display as text
        visible when (CashLedgerStatementDetailExist)
            paragraph
                button of "CashPayment"
                    form invoke is PayablePaymentDetail
