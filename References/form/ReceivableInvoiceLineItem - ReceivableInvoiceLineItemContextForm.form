ReceivableInvoiceLineItemContextForm is a Form
    title is "LineItem"
    Layout
        four column distributed
            column1
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                        display as text
                paragraph
                    ReceivableInvoice.ReceivableProcessLevel.RepresentativeText
                        display as text
            column2
                paragraph
                    visible when (IsManualEntry)
                        button of "<ReceivableInvoice.BatchNumber>"
                            link is ReceivableInvoiceBatchNav
                            label is "BatchNumber"
                            display as link
                    visible when (not IsManualEntry)
                        ReceivableInvoice.BatchNumber
                            label is "BatchNumber"
                            display as text
            column3
                paragraph
                    button of "<DerivedInvoiceTypeInvoice>"
                        link is ReceivableInvoiceNav
                        label is "Transaction"
                        header4
                        bold
                        display as link
            column4
                paragraph
                    ReceivableInvoice.TransientSignedTransactionAmount
                        label is "Amount"
                        display as text
