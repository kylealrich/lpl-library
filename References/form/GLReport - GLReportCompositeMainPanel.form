GLReportCompositeMainPanel is a Form
    title is "Main"
    Layout
        single column
            GLReport
                label is "ReportID"
        four column
            CompositeReport
            Lock
            ShowReportDate
                label is "IncludeFiscalYearAndFiscalMonth_/Quarter"
            visible when (DerivedGrandTotalIsValid)
                GrandTotal
        four column
            ZeroSuppression
            SuppressReportParameterFooter
            visible when (CompositeReport)
                SuppressRowHeader
            visible when (CompositeReport)
                SuppressColumnHeader
        single column
            ReportTitle
                label is "Title_1"
        three column
            visible when (not UseTitleParameter1)
                ReportTitle2
                    label is "Title_2"
            visible when (UseTitleParameter1)
                GLReportFilterParam1
                    label is "SelectParameter"
                    select is GLReportFilterParamRel.GLreportFilterParamCheck
                GLReportFilterParam1.DimensionLabel
                    no label
                    display as text
            UseTitleParameter1
                label is "UseParameter"
        three column
            visible when (not UseTitleParameter2)
                ReportTitle3
                    label is "Title_3"
            visible when (UseTitleParameter2)
                GLReportFilterParam2
                    label is "SelectParameter"
                    select is GLReportFilterParamRel.GLreportFilterParamCheck
                GLReportFilterParam2.DimensionLabel
                    no label
                    display as text
            UseTitleParameter2
                label is "UseParameter"
        single column
            Description
                show up to 10 characters
        visible when (not CompositeReport)
            single column
                RowView
                    label is "Rows"
                ColumnView
                    label is "Columns"
                    color of red
                    raise red alert when (ColumnView.DimensionFilterDisplayValuesIsNotEntered)
                        mouse over text is "<ColumnView.DerivedMissingAlertMessage>"
