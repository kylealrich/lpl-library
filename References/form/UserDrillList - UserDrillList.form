UserDrillList is a Form
    is primary
    title is "UserDrillList"
    Layout
        paragraph
            BusinessView
                label is "<BusinessClassViewMF>"
            BusinessDrillList
                label is "DrillList"
            TBusinessDrillList
                label is "OriginatedFrom"
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserDrillList
                label is "UserDrillListId"
            Description
        single column
            LPL
                use text area of 30 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 10 lines
