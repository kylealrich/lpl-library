StatementReconciliationContextForm is a Form
    propagate as a drill
    title is "ReconciliationTransaction"
    Layout
        three column distributed
            column1
                paragraph
                    CashManagementAccount
                        display as text
                    CashManagementAccount.Title
                        no label
                        display as text
            column2
                paragraph
                    MatchedDate
                        display as text
                    MatchedActor
                        display as text
                    MatchedActor.PersonName.PresentationName
                        no label
                        display as text
            column3
                paragraph
                    LineStatus
                        display as text
                    DerivedMatchedMessage
                        no label
                        display as text
        three column distributed
            column1
                LineMatchField
                CashTransactionCategory
                    label is "Category"
                    select is CashTransactionCategorySelect
                visible when (LineType.Statement)
                    BankStatement
                        display as text
                TransactionAmount
                    label is "LineAmount"
                    display as text
            column2
                LineType
                    display as text
                TransactionNumber
                    display as text
                visible when (LineType.Statement)
                    paragraph
                        BankStatementLine.LineNumber
                            display as text
                        visible when (BankStatementLine.SequenceNumber entered)
                            BankStatementLine.SequenceNumber
                                no label
                                display as text
                visible when (CashLedgerRecord)
                    BankTransactionCode
                        label is "TransactionCode"
                        display as text
                visible when (not LineType.Statement)
                    ReconciledAmount
                    display as text
            column3
                BankReconciliationTemplate.LineMatchField
                    label is "TemplateMatchField"
                    display as text
                TransactionDate
                    display as text
                visible when (LineType.Statement)
                    BankStatement.StatementDate
                        display as text
                DebitCreditIndicator
                    label is "AmountType"
                    display as text
        single column
            visible when (HasReconciledDifference)
                ReconciledDifference
            visible when (LineType.Statement)
                BankStatementLine.Comment
                    label is "BankStatementLineComment"
                    use text area of 2 lines
            visible when (CashForecastDetailRecord)
                RelatedCashForecastDetail(CashForecastDetail).Comment
                    label is "ForecastDetailComment"
                    use text area of 2 lines
            visible when (NonCashLedgerTransactionRecord)
                NonCashLedgerTransaction.Comment
                    label is "NonCashLedgerDetailComment"
                    use text area of 2 lines
