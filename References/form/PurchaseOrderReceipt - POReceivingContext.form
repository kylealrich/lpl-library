POReceivingContext is a Form
    Layout
        display as text
            visible when (ReceiptExists)
                three column distributed
                    column1
                        Company.DerivedCompanyIDName
                            label is "Company"
                        paragraph
                            button of "<PurchaseOrder>"
                                link is PODashboard
                                label is "PurchaseOrder"
                                display as link
                            PORelease
                                label is "Release"
                            POCode
                                label is "Code"
                    column2
                        PurchaseOrderReceipt
                            label is "Receipt"
                        ReferenceNumber
                            label is "ReferenceNumber"
                    column3
                        DerivedStatus
                            display as tag
                                color of yellow when (IsUnreleasedAndInProgress)
                                color of green when (Status.Released)
                                color of gray
                        visible when (LineHasBuyerMessageCondition)
                            single column
                                text of "UnreleasedBuyerMessagesExist"
                                    bold
                                    color of red
                        visible when (HasLinesWithSpecialHandling)
                            paragraph
                                SpecialHandlingMessageForMultipleLines
                                    no label
                                    display as tag
                                        color of yellow
                                button of "<SpecialHandlingMessageForListMultipleLines>"
                                    link is SpecialHandlingNav
                                    display as link
            visible when (HasPOReceiptMessage)
                paragraph
                    ReceiverTabMessage
                        no label
                    InvoiceMiscAOCMessage
                        no label
                    InvoiceHasItemMessage
                        no label
                    CatchWeightItemExistsMessage
                        no label
                        display as text
