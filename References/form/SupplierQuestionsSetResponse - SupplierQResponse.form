SupplierQResponse is a Form
    title is "QuestionResponses"
    Layout
        paragraph
            SupplierQuestions.QuestionText
                label is number
                display as text
            visible when (SupplierQuestions.CreatedFromQuestionEntered)
                text of "CreatedFromAnswerToQuestion--<SupplierQuestions.CreatedFromQuestionRel.QuestionText>"
                    italics
                    color of blue
        single column
            visible when (SupplierQuestions.HasAttachment)
                SupplierQuestions.Attachment.File
                    label is "ViewSupportingDocument"
        single column
            visible when (SupplierQuestions.BuyerDisplayResponseRequiredText)
                single column
                    text of "<ConditionalAnswerLabel>"
                        italics
                        color of red
            SupplierQuestionsSetAnswer
                label is "Answer"
            visible when (SupplierQuestions.AllowResponseAttachment)
                visible when (not HasResponseAttachment)
                    Attachment.File
                        label is "AttachDocument"
                visible when (HasResponseAttachment)
                    Attachment.File
                        label is "ViewAndMaintainDocument"
