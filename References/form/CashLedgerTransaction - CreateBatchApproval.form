CreateBatchApproval is an ActionForm
    action is CreateBatchApproval
    Layout
        paragraph
            PrmCashLedgerTransactionGroup
                label is "CashLedgerTransactionGroup"
        paragraph
            PrmCashManagementAccount
                label is "CashManagementAccount"
            PrmCashManagementAccount.Title
                no label
                display as text
        paragraph
            PrmCashCode
                label is "CashCode"
            PrmCashCode.Description
                no label
                display as text
        paragraph
            PrmBankTransactionCode
                label is "BankTransactionCode"
                select is BankCreditTransactionCodes
            PrmBankTransactionCode.Description
                no label
                display as text
        paragraph
            PrmGeneralLedgerSourceCode
                label is "GlobalLedgerSourceCode"
            PrmGeneralLedgerSourceCode.Description
                no label
                display as text
        blank line
        paragraph
            PrmDateRange.Begin
                label is "PostDate"
            text of "_-"
            PrmDateRange.End
                no label
        paragraph
            PrmSearchAmountRange.Begin
                label is "Amount"
            text of "_-"
            PrmSearchAmountRange.End
                no label
        blank line
        single column
            visible when (PrmCashManagementGroup.RequiresApprovalCodesForTransactions)
                PrmApprovalCode
                    label is "ApprovalCode"
                    select is CashLedgerApprovalCodes
            PrmCommentText
                label is "Comment"
        blank line
        paragraph
            PrmAutoApprove
                label is "AutoApprove"
            visible when (PrmCashManagementGroup.CashLedgerTransactionApprovalRequired)
                PrmSubmitForApproval
                    label is "SubmitForApproval"
