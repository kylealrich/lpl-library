ManualBankStatementContextForm is a Form
    title is "BankStatement"
    Layout
        visible when (false)
            AssignLocalPostingPeriod
        three column distributed
            column1
                paragraph
                    BankStatement
                        label is "StatementNumber"
                        display as text
                    StatementDate
                PostingStatus
                    display as text
            column2
                paragraph
                    CashManagementAccount
                    CashManagementAccount.Title
                        no label
                        display as text
                EntryMethod
                    display as text
            column3
                StatementStatus
                    display as text
                StatementCurrency
                    display as text
