DirectForecastPeriodContext is a Form
    title is "DirectForecastPeriod"
    Layout
        display as text
            three column
                DirectForecast
                ForecastPeriod
                paragraph
                    PeriodDateRange.Begin
                        label is "PeriodDateRange"
                    text of "-"
                    PeriodDateRange.End
                        no label
            three column
                PeriodReceipts
                    label is "CashInflow"
                PeriodDisbursements
                    label is "CashOutflow"
                NetPeriodActivity
                    label is "NetCashflow"
