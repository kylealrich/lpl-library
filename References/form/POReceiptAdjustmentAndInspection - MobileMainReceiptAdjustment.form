MobileMainReceiptAdjustment is a Form
    title is "ReceiptAdjustment"
    Layout
        single column
            Company.DerivedCompanyNameID
                label is "Company"
                display as text
            PurchaseOrderReceipt.ReferenceNumber
                label is "ReferenceNumber"
                display as text
            DocumentDate
                label is "AdjustmentDate"
            ReferenceNumber
                label is "AdjustmentReferenceNumber"
            visible when (HasUnreleasedBuyerMessages)
                text of "UnreleasedBuyerMessagesExist"
                    bold
                    color of red
