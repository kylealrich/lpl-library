Main is a Form
    Layout
        visible when (AllocationControl.Type.Actuals)
            two column distributed
                column1
                    paragraph
                        Ledger
                            label is "TransactionLedger"
                    paragraph
                        SourceLedger
                    paragraph
                        AllocationGroup
                            show up to 20 characters
                    paragraph
                        DefaultStep
                    visible when (actor.context.FinanceEnterpriseGroup.FundAccounting)
                        paragraph
                            CashOffsetAccount
                column2
                    paragraph
                        SourceSystemCode
                    visible when (CustodialAccountInterest)
                        paragraph
                            DerivedCustodialAccountInterestEvent
                                label is "GlobalLedgerEvent"
                                display as text
                    visible when (not CustodialAccountInterest)
                        paragraph
                            GeneralLedgerEvent
                                label is "GlobalLedgerEvent"
                    paragraph
                        AutoReverse
                    paragraph
                        AllowMultiplePostings
                    visible when (not CustodialAccountInterest)
                        paragraph
                            OverthrownAmountOption
        visible when (AllocationControl.Type.Budget)
            paragraph
                Ledger
                    label is "TransactionLedger"
                    display as text
            paragraph
                SourceLedger
                    display as text
            paragraph
                DefaultStep
            paragraph
                AllocationGroup
            paragraph
                OverthrownAmountOption
