ContactFromEmployee is an ActionForm
    action is CreateContactFromEmployee
    title is "SourcingEventContact"
    Layout
        display as text
            two column
                SourcingEvent.RepresentativeText
                visible when (ContactEntered)
                    SourcingEventContact
        single column
            Contact
        header3 of "ContactDetails"
        visible when (ContactEntered)
            display as text
                single column
                    DerivedName
                    blank line
                    DerivedEmail
                    DerivedPhone
        two column
            ContactType
            PrimaryContact
        two column
            visible when (EligibleForCM)
                PurchasingContact
                    label is "SendContactToContractManagement"
            SupplierCanView
        single column
            Address
