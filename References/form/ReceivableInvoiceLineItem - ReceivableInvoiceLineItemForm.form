ReceivableInvoiceLineItemForm is a Form
    title is "ReceivableInvoiceLineItem"
    Layout
        three column distributed
            column1
                paragraph
                    Description
            column2
                paragraph
                    ItemReference
            column3
                paragraph
                    GlobalLineType
        three column distributed
            column1
                paragraph
                    FinanceDimension2
                        label is "<Company.CustomerBusinessGroup.FinanceEnterpriseGroup.FinanceDimension2Label>"
            column2
                paragraph
                    ProjectContract
                        label is "<Company.CustomerBusinessGroup.FinanceEnterpriseGroup.ProjectLabel>Contract"
            column3
                paragraph
                    Project
                        label is "<Company.CustomerBusinessGroup.FinanceEnterpriseGroup.ProjectLabel>"
        three column distributed
            column1
                paragraph
                    TransactionAmount
            column2
                paragraph
                    TransactionUserField1
                        label is "UserSortField"
            column3
                paragraph
                    ItemUser1
                        label is "LineItemUserField"
        visible when (ReceivableInvoice.ShowDetailedFinanceStructure)
            header2 of "DetailFinanceStructure"
            InvoiceFinanceCodeBlock
                label is "InvoiceAccrualAccount"
                compact format
        visible when (ReceivableInvoice.IsApplicationSort)
            header2 of "AdditionalApplicationSortFields"
            visible when (ReceivableInvoice.IsApplicationSort1Label)
                paragraph
                    Sort1
                        label is ReceivableInvoice.Customer.CustomerGroup.ApplicationSort1Label
            visible when (ReceivableInvoice.IsApplicationSort2Label)
                paragraph
                    Sort2
                        label is ReceivableInvoice.Customer.CustomerGroup.ApplicationSort2Label
            visible when (ReceivableInvoice.IsApplicationSort3Label)
                paragraph
                    Sort3
                        label is ReceivableInvoice.Customer.CustomerGroup.ApplicationSort3Label
            visible when (ReceivableInvoice.IsApplicationSort4Label)
                paragraph
                    Sort4
                        label is ReceivableInvoice.Customer.CustomerGroup.ApplicationSort4Label
