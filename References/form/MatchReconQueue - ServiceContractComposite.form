ServiceContractComposite is a CompositeForm
    title is "<SmartReconCompositeTitle>"
    context form is ServiceContractContext
        background is theme color
    show panel control on left
    Actions
        action is SmartReconServiceContractMatch
            label is "Match"
            hide when invalid
            valid when (AllowServiceContractMatch)
        action is StartReview
            label is "CreateAutoSet"
            hide when invalid
            valid when (not Previous1Exists)
        action is MarkAllLinesAsReviewed
            hide when invalid
            valid when (ShowMarkAll)
        action is MarkAllLinesAsNotReviewed
            hide when invalid
            valid when (ShowMarkAll)
        action is previous record
            label is "_"
            mouse over text is "PreviousRecord"
        action is next record
            label is "_"
            mouse over text is "NextRecord"
        action is refresh
            label is "_"
            mouse over text is "Refresh"
    SelectionComplete is a Panel
        visible when (ShowSelectionComplete)
        form is SelectionComplete
    ContractDetailBoth is a MultiListPanel
        title is "ContractDetail"
        visible when (ShowContractDetailBoth)
        list is NotReviewedServiceQuantityContractDetailRel.QuantityReconDetailsForAServiceContract
        list is NotReviewedServiceAmountContractDetailRel.AmountReconDetailsForAServiceContract
    ContractDetailAmount is a MultiListPanel
        title is "ContractDetail"
        visible when (ShowContractDetailAmount)
        list is NotReviewedServiceAmountContractDetailRel.AmountReconDetailsForAServiceContract
    Chargebacks is a Panel
        visible when (ShowChargebackPanel)
        list is PayablesInvoice.PayablesInvoiceChargebackRel.ChargebackMatchAnalysisList
    Messages is a Panel
        visible when (ShowMessagesPanel)
        list is PayablesInvoice.OpenMatchInvoiceMessagesRel.MatchReconInvoiceMessageReview
    ContractDetail2 is a Panel
        title is "ContractDetail"
        visible when (View.MatchComplete)
        list is ContractDetailRel.ReconDetailsForAServiceContract
