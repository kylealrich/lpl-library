Main is a Form
    title is "ChangeRequest"
    Layout
        three column distributed
            Scenario.ScenarioDescription
                label is "Scenario"
                display as text
            visible when (not Status.Unreleased)
                Description
                    display as text
            visible when (Status.Unreleased)
                Description
            Status
                display as tag
                    color of green when (Status.Released)
                    color of yellow when (not Status.Released)
        three column distributed
            visible when (not Status.Unreleased)
                display as text
                    Currency
                    DefaultPeriod
                        select is Scenario.MonthsInCalendarRel.GeneralLedgerCalendarPeriodList
            visible when (Status.Unreleased)
                Currency
                DefaultPeriod
                    select is Scenario.MonthsInCalendarRel.GeneralLedgerCalendarPeriodList
            visible when (Status.Released)
                DerivedChildScenario
                    display as text
            visible when (HasBudgetErrors)
                BudgetFailureMessage
                    no label
                    bold
                    color of red
                    display as text
        three column distributed
            column3
                visible when (CubeOffline)
                    GeneralLedgerTotalCubeOfflineMessage
                        no label
                        display as tag
                            color of blue
