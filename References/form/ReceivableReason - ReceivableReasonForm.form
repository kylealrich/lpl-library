ReceivableReasonForm is a Form
    title is "ReceivableReason"
    Layout
        visible when (not IsReceivableOverAppliedReasonOrMarkAsPaidReason)
            paragraph
                SelectableReceivableAdjustmentReasonType
                    label is "ReceivableAdjustmentReasonType"
                    display as required
            visible when (not IsReceivableOverAppliedOrMarkAsPaidOrGroupingReason)
                DistributionAccount
                    label is "Account"
                    compact format
                    display as required
            visible when (IsGroupingOrPaymentTransferOrMemoEntryReason)
                DistributionAccount
                    label is "Account"
                    compact format
            paragraph
                ReceivableInvoiceDisputeCode
                Active
        visible when (ReceivableAdjustmentReasonType.Chargeback)
            blank line
            text of "Chargebacks:"
                bold
            paragraph
                ChargebackType
                    display as required
            paragraph
                ChargebackAccount
                    compact format
                    display as required
            paragraph
                ChargebackDisputeCode
        visible when (not IsReceivableOverAppliedOrMarkAsPaidOrGroupingReason)
            blank line
            paragraph
                Review
                    label is "Review"
                RequiresApproval
                visible when (RequiresApproval)
                    ApprovalCode
                        select is ApprovalCodesWithLevels
                        show up to 10 characters
                        display as required
                    ApprovalCode.Description
                        no label
                        display as text
                RejectAdjustmentReasonCodeRequired
                AttachmentRequired
            paragraph
                visible when (Review.ConditionalReviewRequired)
                    AdjustmentAmountReviewLimit
                    AdjustmentAmountReviewPercent
            paragraph
                AccountingUnitOverrideFlag
                AccrualAccount
                    compact format
