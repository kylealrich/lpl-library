NationalAccountTransactionContextFormPanel is a Form
    Layout
        display as text
            four column distributed
                column1
                    paragraph
                        BatchNumber
                            label is "BatchNumber"
                        ReceivableInvoiceDetail.Origin
                column2
                    paragraph
                        ReceivableInvoiceDetail.ReceivableProcessLevel.RepresentativeText
                column3
                    paragraph
                        DueDate
                column4
                    paragraph
                        TermsCode.DerivedTermsCodeTitle
            four column distributed
                column1
                    paragraph
                        BankTransactionCode.BankTransactionCodeName
                            label is "PaymentCode"
                column2
                    paragraph
                        BankTransactionCode.TransactionCategoryAndOrigin
                            label is "PaymentCodeTransactionCategoryAndOrigin"
                column3
                    paragraph
                        ReceivableInvoiceDetail.EFTTransaction
                column4
                    paragraph
                        ReceivableInvoiceDetail.SalesRepresentative.DerivedSalesRepresentativeText
            four column distributed
                column1
                    paragraph
                        AlternateReceivableInvoiceType
                            label is "AlternateInvoiceType"
                        visible when (ReceivableInvoiceDetail.CreditDebitMemoReasonEntered)
                            ReceivableInvoiceDetail.CreditDebitMemoReason
                column2
                    paragraph
                        TermsCode
                column3
                    paragraph
                        ReceivableInvoiceDetail.ItemReference
                column4
                    paragraph
                        CustomerPurchaseOrder
                            label is "PurchaseOrder"
                            display as text
            four column distributed
                column1
                    paragraph
                        BaseAmount
                        OpenBaseAmount
                    CurrencyDecimalsNumber
                    Project
                    NationalAccountIndicator
                column2
                    paragraph
                        OriginalCurrency
                        CurrencyRate
                    LastApplicationSequence
                    SummarizeDetail
                        label is "SummarizeDetailForDisplay"
                    Actor
                column3
                    OpenSortBaseAmount
                    CrossReferenceReceivableInvoice
                    RiskIndicator
                column4
                    CurrencyMultiplicationOrDivision
                    ProjectContractCustomer
                    TransactionUserField1
                    CrossReferenceReceivableInvoiceType
            visible when (ReceivableInvoiceDetail.IsDiscount)
                header3 of "_"
            four column distributed
                column1
                    visible when (ReceivableInvoiceDetail.IsDiscount)
                        paragraph
                            DiscountDate.DiscDate[1]
                                label is "DiscountDate"
                            DiscountPercent.DiscPct[1]
                                label is "Percent"
                            DiscountAmount.OrigDiscAmt[1]
                                label is "Amount"
                column2
                    visible when (ReceivableInvoiceDetail.IsMultipleDiscount)
                        paragraph
                            DiscountDate.DiscDate[2]
                                label is "Discount2Date"
                            DiscountPercent.DiscPct[2]
                                label is "Discount2Percent"
                            DiscountAmount.OrigDiscAmt[2]
                                label is "Discount2Amount"
                column3
                    visible when (ReceivableInvoiceDetail.IsMultipleDiscount)
                        paragraph
                            DiscountDate.DiscDate[3]
                                label is "Discount3Date"
                            DiscountPercent.DiscPct[3]
                                label is "Discount3Percent"
                            DiscountAmount.OrigDiscAmt[3]
                                label is "Discount3Amount"
            visible when (ReceivableInvoiceDetail.ShowDetailedFinanceStructure)
                header3 of "_"
                text of "Invoice_Accrual_Account:"
                    header4
                    bold
                paragraph
                    ReceivableInvoiceDetail.InvoiceFinanceCodeBlock
                        label is "InvoiceAccrualAccount"
