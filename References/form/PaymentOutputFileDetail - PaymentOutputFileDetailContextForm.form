PaymentOutputFileDetailContextForm is a Form
    title is "PaymentOutputFileDetails"
    restrict action SaveIDMXML
    Layout
        display as text
            four column distributed
                column1
                    CashLedgerTransactionIdentifier
                    GeneralLedgerSourceCode
                        label is "GlobalLedgerSourceCode"
                    PaymentAmount
                column2
                    TransactionNumber
                    BankTransactionCode
                    PayBankAmount
                column3
                    EffectiveDate
                    PaymentDate
                    PayBankCurrency
                column4
                    button of "View"
                        visible when (HasRemittanceIDMDocument)
                        link is external "<DerivedIDMRemittanceLink>"
                        label is "RemittanceDocument"
                        display as link
