Main is a Form
    Layout
        paragraph
            visible when (RecordExists)
                ComponentItem
                    label is "Line"
                    display as text
        paragraph
            two column
                column1
                    Item
                        show up to 5 characters
                    Item.Description
                        no label
                        display as text
                column2
                    display as text
                        Manufacturer
                            compact format
                        ManufacturerNumber
        paragraph
            ComponentUOM
            ComponentUOM.Description
                no label
                display as text
        text of "_"
        header2 of "Quantities"
        three column
            column1
                text of "Open"
                    center
                OpenQuantity
                    no label
                    when value changed
                        TransientTotalQuantity =  (OpenQuantity + HoldQuantity)
            column2
                text of "Hold"
                    center
                HoldQuantity
                    no label
                    when value changed
                        TransientTotalQuantity =  (OpenQuantity + HoldQuantity)
            column3
                text of "Total"
                    center
                TransientTotalQuantity
                    no label
                    display as text
