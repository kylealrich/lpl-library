CurrentActivityBalanceByTypeContextForm is a Form
    title is "CurrentActivityBalance"
    Layout
        five column table
            column1
                display as text
                    paragraph
                        StudentActivitySchoolType
                            label is "SchoolType"
                    paragraph
                        visible when (HasParent)
                            ParentStudentActivityAccount
                                label is "ParentAccount"
                                select is StudentActivityGroupSelectList
                    paragraph
                        StudentActivityAccount
                            label is "Activity"
            column2
                display as text
                    paragraph
                        StudentActivitySchoolType.Description
                            no label
                            align as label
                    paragraph
                        visible when (HasParent)
                            ParentStudentActivityAccount.Description
                                no label
                                align as label
                    paragraph
                        Description
                            no label
                            align as label
            column3
                display as text
                    paragraph
                        blank line
                    paragraph
                        StudentActivityType
                            label is "ActivityType"
                    paragraph
                        ActivityLevel
            column4
                paragraph
                    DerivedLatestCloseEndingBalanceByType
                        label is "LastPeriodEndingBalance"
                        indent
                        display as text
                paragraph
                    DerivedCurrentBalanceByType
                        label is "CurrentBalance"
                        indent
                        display as text
                paragraph
                    Active
                        align as label
                        indent
            column5
                display as text
                    paragraph
                        DerivedCurrentReceiptsByType
                            label is "Receipts"
                            indent
                    paragraph
                        DerivedCurrentDisbursementsByType
                            label is "Disbursements"
                            indent
                    paragraph
                        DerivedCurrentTransfersByType
                            label is "Transfers"
                            indent
