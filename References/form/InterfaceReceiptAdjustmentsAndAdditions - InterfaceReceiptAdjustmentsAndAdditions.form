InterfaceReceiptAdjustmentsAndAdditions is an ActionForm
    action is InterfaceReceiptAdjustmentsAndAdditions
    title is "InterfaceReceiptAdjustmentsAndAdditions"
    Layout
        single column
            PrmRunGroup
                label is "RunGroup"
            ProcessingOption
        two column
            PrmCompany
                label is "Company"
            PrmCompany.Name
                no label
                display as text
        single column
            ReleaseReceipts
                label is "ReleaseReceipts"
                    left of field
            visible when (ProcessingOption.DatabaseFile)
                IncludeRecordsInError
                    label is "IncludeRecordsInError"
                        left of field
                text of "IfRunForErrorRunGroupRecordsInErrorWillAutomaticallyBeIncluded"
                    italics
            MoveErrorsToNewRunGroup
                label is "MoveErrorsToNewRunGroup"
                    left of field
            visible when (MoveErrorsToNewRunGroup)
                PrmErrorRunGroupPrefix
                    label is "ErrorRunGroupPrefix"
