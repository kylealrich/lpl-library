QueueDefinitionForm is a Form
    propagate as a drill
    title is "Queue"
    Layout
        single column
            AsyncQueueDefinition
                label is "Name"
            Description
        single column
            Priority
        paragraph
            MaxActiveActions
                label is "MaxActiveActions/\\WorkUnits"
            visible when (IsIPAQueue)
                TenantMaxWorkUnits
                    display only
            Suspended
            SystemQueue
        header2 of "AsyncSettings"
        three column
            AsyncQueueGroup
                label is "QueueGroup"
            visible when (QueueGroupEntered)
                AsyncQueueGroup.Suspended
                    label is "GroupSuspended"
                AsyncQueueGroup.MaxActiveActions
                    label is "GroupMaxActiveActions"
        three column
            column1
                visible when (NotificationInformation.EmailAddress entered)
                    NotificationInformation.EmailAddress
                        raise yellow alert when (true)
                            mouse over text is "ThisFieldHasBeenDeprecated.PleaseUseTheOtherEmailAddressField"
                NotificationInformation.EmailAddressMultiple
                    use text area of 1 lines
            column2
                NotificationInformation.NotificationType
            column3
                SaveHistory
        two column
            QueueAsBindingKey
            visible when (QueueNameEntered)
                text of "WhenSetToTrueABatchExecutorMustBeDefinedAndRunningWithA_'queueid'_valueSetToTheQueueName<AsyncQueueDefinition>"
            visible when (not QueueNameEntered)
                text of "WhenSetToTrueABatchExecutorMustBeDefinedAndRunningWithA_'queueid'_valueSetToTheQueueName"
        header2 of "Mapping&Triggers"
