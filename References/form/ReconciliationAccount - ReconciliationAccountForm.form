ReconciliationAccountForm is a CompositeForm
    is primary
    propagate as a drill
    title is "ReconciliationAccount"
    context form is ReconciliationAccountContextForm
        background is theme color
    Actions
        action is CreatePeriodReconciliations
            label is "CreatePeriodReconciliation"
            hide when invalid
        navigation is DetailTransactionReconciliation
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is open
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is ReconciliationAccountMain
    Accounts is a Panel
        visible when (LevelType.Group)
        list is ReconciliationAccountChildrenRel.ChildrenReconciliationAccountList
            helper list is AddToReconciliationGroupHelperRel.ChildrenReconciliationAccountList
                action is AddToReconciliationGroup
                    invoked.PrmReconciliationGroup = ReconciliationAccount
    AllReconciliationDetails is a Panel
        visible when (IsConsolidatedGroupStandaloneNonAccountOrAccountWithinIndependentGroup)
        list is ReconciliationDetail set.ReconciliationDetailsList
    AllReconcilingItems is a Panel
        visible when (IsConsolidatedGroupStandaloneNonAccountOrAccountWithinIndependentGroup)
        list is ReconciliationDetail set.ReconcilingItemsList
    AllAmortizations is a Panel
        visible when (ShowAllAmortizations)
        list is ReconciliationDetail set.AmortizationList
    AllCommentsAndAttachments is a Panel
        visible when (IsConsolidatedGroupStandaloneNonAccountOrAccountWithinIndependentGroup)
        list is ReconciliationAccountComment set.ReconciliationAccountCommentList
    PeriodReconciliations is a Panel
        visible when (IsGroupStandaloneOrNonAccount)
        list is PeriodEndReconciliationRel.PeriodReconciliationForAccountList
