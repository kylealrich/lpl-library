BillingDocumentRevenueAndExpenseDistributionForm is a Form
    title is "IntercompanyBillingDocumentDistribution"
    Layout
        paragraph
            IntercompanyBillingDocumentHeader
                label is "Document"
                display as text
            IntercompanyBillingDocumentHeader.Description
                no label
                display as text
                show up to 100 characters
        paragraph
            IntercompanyBillingDocumentHeader.InvoiceDate
                label is "TransactionDate"
                display as text
            IntercompanyBillingDocumentHeader.PostDate
                label is "PostingDate"
                display as text
        blank line
        single column
            IntercompanyBillingDocumentLine
                label is "Line"
                display as text
        paragraph
            IntercompanyBillingDocumentLine.RechargeItem
                display as text
            IntercompanyBillingDocumentLine.RechargeItem.Description
                no label
                display as text
        single column
            IntercompanyBillingDocumentLine.ExtendedAmount
                display as text
        blank line
        single column
            GeneralLedgerAccount
                compact format
            DistributionAmount
                label is "Amount"
            Description
