RSSLPLRequisitionMain is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (HasNoLines)
                        visible when (RSSLPLDisplayRequestingLocation)
                            RequestingLocation
                                display as required
                    visible when (HasLines)
                        visible when (RSSLPLDisplayRequestingLocation)
                            RequestingLocation
                                display only
                                display as required
                            RequestingLocation.Name
                                no label
                                display as text
                visible when (DisplayRequisitionDescription)
                    RequisitionDescription
                        display as required when (RequesterRel.RequireRequisitionDescription)
                visible when (DisplayRequestedDeliveryDate)
                    RequestedDeliveryDate
                        display as required when (RequesterRel.RequireRequestedDeliveryDate)
            column2
                paragraph
                    visible when (RSSLPLDisplayFromCompany)
                        FromCompanyLocation.FromCompany
                            label is "DeliverFromCompany"
                            display as required
                        FromCompanyLocation.FromCompany.Name
                            no label
                            display as text
                paragraph
                    visible when (RSSLPLDisplayFromLocation)
                        FromCompanyLocation.FromLocation
                            label is "DeliverFromLocation"
                            select is RQInventoryLocations
                            display as required
                        FromCompanyLocation.FromLocation.Name
                            no label
                            display as text
                visible when (DisplayDeliverTo)
                    DeliverTo
                        display as required when (RequesterRel.RequireDeliverTo)
            column3
                paragraph
                    visible when (RSSLPLDisplayAllocationPriorityLevel)
                        paragraph
                            TransientAllocationPriorityLevel
                                label is "Priority"
                                initial value is RSSLPLAllocationPriorityLevelRel.AllocationPriorityLevel
                            TransientAllocationPriorityLevel.Description
                                no label
                                display as text
                    visible when (RSSLPLDisplayPriority)
                        AllocationPriority
                            label is "Priority"
                    visible when (DisplayQuoteRequired)
                        QuoteRequired
                visible when (DisplaySingleDocToPO)
                    OneSourceDocumentToOnePO
                        label is "SingleDocument_to_aPurchaseOrder"
                visible when (DisplayCommentType)
                    DefaultCommentType
                        label is "CommentType"
        single column
        visible when (DisplayShippingNotes)
            ShippingNotes
                label is "ShippingNotes"
                display as required when (RequesterRel.RequireShippingNotes)
        header2 of "LineDefaults"
        three column distributed
            column1
                paragraph
                    visible when (DisplayVendor)
                        Vendor
                            select is ActiveVendorsByName
                            display as required when (RequesterRel.RequireVendor)
                        Vendor.VendorName
                            no label
                            display as text
                paragraph
                    visible when (DisplayPurchaseFrom)
                        PurchaseFromLocation
                            label is "PurchaseFrom"
                            select is NonRemitToActivePurchaseFromLocations
                        PurchaseFromLocation.VendorName
                            no label
                            display as text
                visible when (RSSLPLDisplayCurrencyCode)
                    TransactionCurrencyCode
                        label is "CurrencyCode"
                visible when (DisplayBillCode)
                    DefaultBillCode
                        label is "BillCode"
            column2
                visible when (DisplayAccounting)
                    DefaultDistributionAccount
                        label is "DistributionAccount"
                        compact format
                paragraph
                    visible when (DisplayBuyer)
                        Buyer
                            display as required when (RequesterRel.RequireBuyer)
                        Buyer.Employee.FirstLastName
                            no label
                            display as text
                        visible when (HasBuyer)
                            button of icon.profile
                                link is MobileBuyerInformation
                    visible when (DisplayOnlyBuyer)
                        Buyer
                            display only
                        Buyer.Employee.FirstLastName
                            no label
                            display as text
                        visible when (HasBuyer)
                            button of icon.profile
                                link is MobileBuyerInformation
                visible when (DisplayStrategicSourcingUsed)
                    SourcingEventRequired
                    DefaultCommentCode
                        label is "CommentCode"
            column3
                visible when (DisplayDeliveryMethod)
                    DeliveryMethod
                paragraph
                    CommodityCode
                    CommodityCode.CcDescription
                        no label
                        display as text
                paragraph
                    visible when (DisplayPOCode)
                        POCode
                            display as required when (RequesterRel.RequirePOCode)
                        POCode.Description
                            no label
                            display as text
                paragraph
                    visible when (DisplayTaxInfo)
                        PurchaseTaxable
                            label is "Taxable"
                    visible when (PurchaseTaxable)
                        PurchaseTaxCode
                            label is "TaxCode"
                            select is ValidTaxCodesForEntity
                        PurchaseTaxCode.Description
                            no label
                            display as text
                    visible when (false)
                        TransientRSSLPLRequisitionScreen
                paragraph
                    QuoteNumber
