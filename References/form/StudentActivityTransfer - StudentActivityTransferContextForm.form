StudentActivityTransferContextForm is a Form
    title is "<mode>ActivityTransfer"
    Layout
        two column table
            column1
                paragraph
                    visible when (not TransactionExists)
                        StudentActivityDistrict
                            label is "SchoolDistrict"
                            display as text
                    visible when (TransactionExists)
                        StudentActivityTransfer
                            label is "TransferNumber"
                            display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    FromActivity
                        compact format
                        select is SchoolActivities
                paragraph
                    TransferAmount
            column2
                paragraph
                    visible when (not TransactionExists)
                        StudentActivityDistrict.Name
                            no label
                            display as text
                    visible when (TransactionExists)
                        Status
                            display as text
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    FromActivity.Description
                        no label
                        display as text
                paragraph
                    TransferDate
        paragraph
            Description
                use text area of 2 lines
        visible when (Status.Entered)
            header2 of "TransferToDetails"
            two column table
                column1
                    visible when (not TransactionExists)
                        paragraph
                            TransferToActivity
                                compact format
                                select is SchoolActivities
                        paragraph
                            TransferToAmount
                                label is "Amount"
                    visible when (TransactionExists)
                        paragraph
                            OutOfBalanceAmount
                column2
                    visible when (not TransactionExists)
                        TransferToActivity.Description
                            no label
                            display as text
