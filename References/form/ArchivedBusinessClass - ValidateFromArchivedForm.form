ValidateFromArchivedForm is an ActionForm
    action is ValidateFromArchived
    title is "ValidateArchiveCounts"
    Layout
        paragraph
            ParamValidateAll
            visible when (CheckSumExists)
                text of "-or-"
                valid when (not ParamValidateAll)
                    ParamCheckSum
        paragraph
            ParamSendNotification
            text of "ResultsCanBeFoundInValidationResults"
        visible when (not CurrentInArchiveCountConsistent)
            paragraph
                ActualInArchiveCount
                    label is "ExpectedVaue"
                CurrentInArchiveCount
                    label is "RecordCount"
                ArchiveCountDiscrepancy
                    label is "Discrepancy"
                    display as tag
                        color of red
