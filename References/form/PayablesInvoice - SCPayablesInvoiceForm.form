SCPayablesInvoiceForm is a CompositeForm
    title is "InvoiceInformation"
    called out actions only
    context form is SupplierPortalInvoiceContext
        background is theme color
    restrict action Unreleased.CreateBySupplierDelete
    Actions
        action is Unreleased.CreateBySupplierSubmitInvoice
            hide when invalid
    Main is a Panel
        form is SCInvoiceSummary
    PODetail is a Panel
        visible when (UnsubmittedSupplierPOInvoice)
        list is PayablesInvoiceDetailRel.SCInvoiceDetailsForAPO
    PODetails is a Panel
        visible when (SubmittedSupplierPOInvoice)
        list is PayablesInvoiceDetailRel.SupplierPortalInvoiceDetails
    AddOnChargeDetails is a MultiListPanel
        visible when (SupplierAOCAtSomeLevel)
        list is MiscPayablesInvoiceAddOnChargeRel.SupplierPortalInvoiceAOCMisc
            visible when (HasMiscellaneousAOCs)
        list is PayablesInvoiceSpreadAddOnChargeRel.SupplierPayablesInvoiceSpreadAddOnCharge
            visible when (HasSpreadAOCs)
        list is NonMiscPayablesInvoiceAddOnChargeRel.SupplierPortalInvoiceAOCLine
            visible when (HasLineAOCsNotSpread)
        list is PayablesInvoiceSupplierAddOnChargeRel.PayablesInvoiceSupplierAddOnChargeList
            visible when (HasSupplierAddOnCharges)
    ServiceContractDetail is a Panel
        visible when (UnsubmittedSupplierServiceInvoice)
        list is InvoiceDetailForContractRel.SCInvoiceDetailsForAServiceContract
    ServiceContractDetails is a Panel
        visible when (SubmittedSupplierServiceInvoice)
        list is InvoiceDetailForContractRel.SupplierPortalInvoiceDetails
    InvoiceMessages is a Panel
        visible when (HasInvoiceMessages)
        list is MatchInvoiceMessageRel.SupplierPortalInvoiceMessages
    Comments is a Panel
        visible when (SupplierCommentsExist)
        list is SupplierPayablesInvoiceCommentsRel.PortalPayablesInvoiceComments
