SourceId is a Form
    title is "SupplierContactAndLocationInformation"
    Layout
        two column distributed
            column1
                visible when (not Supplier.SupplierExtEntityEnabled)
                    visible when (not ContactExists)
                        LoginName
                            label is "UserName*"
                            show up to 25 characters
                        paragraph
                            Password
                                label is "Password*"
                                show up to 25 characters
                            ConfirmPassword
                                label is "ConfirmPassword*"
                                show up to 25 characters
                    visible when (ContactExists)
                        LoginName
                            label is "UserName"
                            display as text
                            show up to 25 characters
                ContactTitle
                    label is "Title"
                paragraph
                    MainContact.GivenName
                        label is "FirstName"
                        show up to 25 characters
                    MainContact.FamilyName
                        label is "LastName"
                        show up to 25 characters
                paragraph
                    EmailAddress
                        label is "EmailAddress*"
                    ReceiveEmailNotification
                visible when (SupplierGroup.RequireEmailConfirmation)
                    single column
                        ConfirmEmailAddress
                            label is "ConfirmEmailAddress*"
                GlnNumberContact
                    label is "GlobalLocationNumber"
                paragraph
                    VendorLocation
                    LocationName
                paragraph
                    TelephoneNumber.InternationalPrefix
                    TelephoneNumber.SubscriberNumber
                        label is "PhoneNumber*"
                    TelephoneNumber.Extension
                paragraph
                    MobilePhone
                paragraph
                    FaxNumber
                paragraph
                    PrimaryContact
                    visible when (ContactExists)
                        visible when (Active)
                        Active
                            display as text
                        visible when (not Active)
                            ActiveTag
                                no label
                                display as tag
                                    color of red
            column2
                text of "_"
                header2 of "MailingAddress"
                single column
                    LocationAddress
                        form is PostalAddressShortRequired
                    visible when (SupplierGroup.DisplayTypeForRegistration)
                        LocationAddress.Type
