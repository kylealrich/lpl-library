PeriodEndReconciliationEntryForm is a Form
    use for action Open.Create
    title is "PeriodReconciliation"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        visible when (LevelType.Group)
            paragraph
                PeriodEndReconciliation.ReconciliationAccount.ReconciliationGroup
                    display only
                PeriodEndReconciliation.ReconciliationAccount.ReconciliationGroupMethod
                    display as text
        visible when (LevelType.NonAccount)
            paragraph
                PeriodEndReconciliation.ReconciliationAccount.NonAccountReconciliation
                    display only
        visible when (IsAccountWithinGroup)
            paragraph
                PeriodEndReconciliation.ReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
                    display only
        visible when (LevelType.Account)
            paragraph
                ReconciliationCodeBlock
                    form is ReconciliationCodeBlockDisplay
                ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
        visible when (false)
            single column
                PeriodEndReconciliation.ReconciliationAccount.CloseConfiguration
                    label is "GlobalLedgerCloseConfiguration"
        single column
            PeriodEndReconciliation.GeneralLedgerClosePeriod
                label is "GlobalLedgerClosePeriod"
                compact format
        two column distributed
            column1
                paragraph
                    FinanceTeam
                    FinanceTeam.Description
                        no label
                        display as text
                paragraph
                    AssignedResource
                        compact format
                    AssignedResource.PreferredPresentationName
                        no label
                        display as text
                    button of "<AssignedResource.EmailAddress>"
                        link is "mailto:<AssignedResource.EmailAddress>"
                        display as link
                paragraph
                    CloseTask
                        label is "CloseTask"
                        select is TaskSelect
                    CloseTask.TaskName
                        no label
                        display as text
