CustomerDraftCommentForm is a Form
    is primary
    title is "CustomerDraftComment"
    Layout
        two column distributed
            column1
                paragraph
                    CustomerDraftComment.Company
                        display as text
                paragraph
                    CustomerDraftComment.Customer
                        display as text
                paragraph
                    CustomerDraftComment.DraftNumber
                        label is "CustomerDraft"
                        display as text
                    CustomerDraftComment.Suffix
                        display as text
            column2
                paragraph
                    CustomerDraftComment.DraftSource
                        display as text
                paragraph
                    visible when (CustomerDraftComment.Sequence not entered)
                        CustomerDraftComment.Sequence
                            label is "Sequence"
                    visible when (CustomerDraftComment.Sequence entered)
                        CustomerDraftComment.Sequence
                            label is "Sequence"
                            display as text
                paragraph
                    DateRange
        paragraph
            Comment
