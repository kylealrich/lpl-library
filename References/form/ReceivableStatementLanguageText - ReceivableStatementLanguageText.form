ReceivableStatementLanguageText is a Form
    title is "StatementTextCode"
    Layout
        paragraph
            IsoLocale
                label is "Locale"
                compact format
            IsoLocale.LocaleName
                no label
                display as text
        paragraph
            ReceivableStatementLanguageText.Company
            ReceivableStatementLanguageText.Company.Name
                no label
                display as text
        paragraph
            ReceivableStatementLanguageText.TextCode
                label is "StatementTextCode"
        blank line
        single column
            TransientEditNotes
                label is "EditText"
        paragraph
            visible when (TransientEditNotes)
                text of "MaximumOf4LinesMayBeEntered;MaximumOf40CharactersAllowedOnEachLine"
                    italics
                    color of blue
        single column
            visible when (TransientEditNotes)
                TransientNotes
                    label is "StatementText"
                    use text area of 14 lines
            visible when (not TransientEditNotes)
                TransientNotes
                    label is "StatementText"
                    display as text
