RetirementObligationContext is a Form
    restrict action Create
    restrict action Delete
    Layout
        single column
            paragraph
                text of "<AssetDescriptionMessage>"
            paragraph
                Description
            paragraph
                visible when (Status.Unreleased)
                    EstimatedRetirementDate
                        label is "RetirementDate"
                visible when (not Status.Unreleased)
                    EstimatedRetirementDate
                        label is "RetirementDate"
                        display as text
            paragraph
                visible when (DisplayAdjustmentDate)
                    AdjustmentDate
                visible when (Status.PostRelease)
                    AdjustmentDate
            paragraph
                visible when (IsUnreleased)
                    PostingDate
                visible when (Status.PostRelease)
                    PostingDate
            paragraph
                visible when (Status.Unreleased)
                    DiscountRate
                visible when (not Status.Unreleased)
                    DiscountRate
                        display as text
            paragraph
                Attachment
                    compact format
                visible when (HasAttachment)
                    button of "View"
                        view Attachment.File
                        display as link
                visible when (ApprovalAllowRelease)
                    button of "Release"
                        action is ReleaseRetirementObligation
                visible when (ApprovalAllowAdjustmentReset)
                    button of "ResetAdjustment"
                        action is ResetRetirementObligationAdjustment
                visible when (AllowReset)
                    button of "ResetObligation"
                        action is ResetRetirementObligation
                button of "GoToAsset"
                    link is AssetLink
