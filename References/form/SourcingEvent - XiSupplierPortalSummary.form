XiSupplierPortalSummary is a CompositeForm
    title is "Event<EventVersionString>Summary"
    disable field options
    called out actions only
    context form is XiSESummary
        show context form on left
    Actions
        action is Open.NoBid
            hide when invalid
            valid when (DisplayNoBid)
        action is Open.NoBidReason
            hide when invalid
            valid when (DisplayNoBidReason)
        navigation is EventPrint
            label is "PrintEvent"
            hide when invalid
            valid when (not AmendmentInProgressStatus)
        action is AddMeToPlanHoldersList
            label is "AddMeToPlanHoldersList"
            hide when invalid
        action is RemoveMeFromPlanHoldersList
            label is "RemoveMeFromPlanHoldersList"
            hide when invalid
        action is CreateSupplierMessageAndDialog
            hide when invalid
            valid when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
        action is previous record
            label is "_"
        action is next record
            label is "_"
    Lines is a Panel
        visible when (not AmendmentInProgressStatus)
        list is SourcingEventLine set.XiSupplierPortalEventLines
    EventInformation is a DashBoardPanel
        ResponseProgress is a Panel
            form is EventResponse
        Contacts is a Panel
            visible when (ContactsExist)
            list is SourcingEventContact set.ListContactCardList
        Comments is a Panel
            visible when (SupplierCommentsExist)
            list is SupplierSourcingEventCommentsRel.SupplierPortalSourcingEventCommentCardList
        AddOnCharges is a Panel
            visible when (HeaderAOCExists)
            list is SourcingEventHeaderAOCRel.SupplierSourcingEventAOCCardList
        PlanHoldersList is a Panel
            visible when (ShowPlanHoldersNavigation)
            list is SourcingEventPlanHolder set.PlanHoldersCardList
    QAndAForum is a Panel
        title is "Q_andAForum"
        visible when (AllowSupplierQandA)
        triple width
        list is SourcingEventQandARel.SupplierQAndACardList
    Meetings is a Panel
        visible when (MeetingsExist)
        list is SourcingEventMeeting set.SupplierMeetingList
    Attachments is a Panel
        visible when (SupplierAttachmentsExistNotAmendment)
        list is SupplierSourcingEventAttachmentsRel.ListAttachmentView
    Questions is a Panel
        visible when (QuestionsExistNoSupplierQuestionsNotAmendment)
        list is SourcingEventQuestion set.SupplierQuestionsList
    QuestionsConditional is a Panel
        title is "Questions"
        visible when (SourcingEventSupplierQuestionPortalExistsNotAmendment)
        list is SourcingEventSupplierQuestionPortalRel.SupplierQuestionsConditionalList
    Amendments is a Panel
        visible when (HasAmendmentsNotOpenAmendment)
        list is SourcingEventVersion set.SupplierAmendmentList
    TermsAndConditions is a Panel
        visible when (TermsExistNotAmendment)
        form is TermsAndConditions
    AwardSummary is a Panel
        visible when (ShowAwardSummary)
        list is SourcingEventLine set.SEEventLinesAwarded
