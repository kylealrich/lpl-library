MaintainSubscriptionForm is a Form
    title is "SubscriptionDetails"
    Actions
        action is Unsubscribe
        action is save
        navigation is DisplayPeriod
            label is "View"
            hide when invalid
            valid when (PeriodSubscription)
        navigation is DisplayResource
            label is "View"
            hide when invalid
            valid when (SubscribedToFollowResource)
    Layout
        single column
            SubscriptionTitle
                label is "Subscription"
            MarkAsViewedTimeStamp
                label is "LastUpdateViewed"
                display as text
        header3 of "Preferences:SendUpdatesAs"
        three column
            FinanceResource.SendUpdatesAsNotification
                label is "Notifications"
                display as text
            FinanceResource.SendUpdatesAsEmail
                label is "Emails"
                display as text
            PublishedTimeStamp
                label is "LastUpdateSent"
                display as text
