MobileCashApplicationContextForm is a Form
    title is "CashApplication"
    Layout
        visible when (false)
            TransientIsolatedPaymentCompany
        visible when (PaymentExists)
            paragraph
                Company
                    display as text
                ReceivablePaymentHeader
                    label is "Batch"
                    display as text
            single column
                Company.Name
                    label is "CompanyName"
                    display as text
            paragraph
                ReceivablePaymentHeader.Currency
                    label is "BatchCurrency"
                    display as text
                ReceivablePayment
                    display as text
            paragraph
                ReceivablePaymentHeader.Status
                    label is "BatchStatus"
                    display as text
                ReceivablePaymentHeader.DepositDate
                    display as text
            visible when (UnreleasedOrUnassigned)
                two column distributed
                    Customer
                        display as text
                    Customer.Name
                        label is "CustomerName"
                        display as text
                paragraph
                    PaymentNumber
                    DerivedMessage
                        no label
                        display as text
                paragraph
                    TransactionAmount
                        label is "TransactionAmount"
                    ReferenceNumber
            visible when (not UnreleasedOrUnassigned)
                paragraph
                    Customer
                        display as text
                single column
                    Customer.Name
                        label is "CustomerName"
                        display as text
                paragraph
                    PaymentNumber
                    DerivedMessage
                        no label
                        display as text
                paragraph
                    TransactionAmount
                        label is "TransactionAmount"
                    ReferenceNumber
            two column distributed
                CashApplicationPaymentOpen
                    label is "Open"
                    display as text
                DerivedDisplayCurrency
                    label is "Currency"
                    display as text
            two column distributed
                AppliedAmount
                    label is "Applied"
                    display as text
                visible when (HasApplications)
                    button of "Applications"
                        link is MobileApplications
        visible when (not PaymentExists)
            two column distributed
                Company
                ReceivablePaymentHeader
                    label is "Batch"
            two column distributed
                ReceivablePayment
                    display as text
                ReceivablePaymentHeader.Status
                    label is "BatchStatus"
                    display as text
            single column
                ReceivablePaymentHeader.Currency
                    label is "BatchCurrency"
                    display as text
            two column distributed
                Customer
                PaymentNumber
            two column distributed
                TransactionAmount
                    label is "Amount"
                ReferenceNumber
