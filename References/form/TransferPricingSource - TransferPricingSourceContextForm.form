TransferPricingSourceContextForm is a Form
    title is "RechargeSource"
    Layout
        three column distributed
            column1
                TransferPricingDescription
                    label is "RechargeName"
                    display as text
                Description
                SourcePercentage
            column2
                LineNumber
                    label is "Source"
                    display as text
                RechargeCalculationOption
                visible when (RechargeCalculationOption.SplitUsingCompute)
                    AccountingEntityCompute
                        label is "SplitCompute"
                visible when (RechargeCalculationOption.SplitUsingTotals)
                    TransferPricingSourceWeight
                        label is "TotalAddressName"
                visible when (RechargeCalculationOption.SplitUsingSourceWeights)
                    IncludeAllWeight
                        label is "ApplyAllWeights"
                visible when (RechargeCalculationOption.SplitUsingHeaderWeights)
                    IncludeAllWeight
                        label is "ApplyAllWeights"
            column3
                UseSourceCompute
                visible when (UseSourceCompute)
                    SourceCompute
