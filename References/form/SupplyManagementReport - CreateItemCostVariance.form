CreateItemCostVariance is an ActionForm
    action is CreateItemCostVariance
        on completion navigate to ItemCostVariance
    title is "ItemCostVariance"
    Layout
        single column
            PrmDescription
                label is "ReportDescription"
            PrmVendorGroup.VendorGroup
            PrmVendorGroup.Vendor
            paragraph
                PrmFromDate
                    label is "FromPODate"
                PrmThruDate
                    label is "ThroughPODate"
            PrmItem
            PrmPurchasingMajorClass
                label is "MajorPurchasingClass"
                show up to 10 characters
            PrmPurchasingMinorClass
                label is "MinorPurchasingClass"
                show up to 10 characters
            PrmManufacturerCode
            PrmManufacturerDivision
            PrmCommodityCode
            PrmUNSPSCCode
                label is "UNSPSCSegment"
                compact format
            PrmIncludeOnlyPurchasesWithVendorAgreement
            PrmAbovePercentageVariance
                label is "VariancePercentage"
            PrmAboveAmountVariance
                label is "VarianceAmount"
            PrmIncludeDetails
                label is "IncludeDetail"
                display when blank
            PrmPrintParameters
                label is "PrintParameters"
                display when blank
