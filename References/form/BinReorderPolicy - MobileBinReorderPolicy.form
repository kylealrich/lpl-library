MobileBinReorderPolicy is a Form
    title is "BinReorderPolicy"
    Layout
        two column distributed
            Company
            Company.Name
                label is "CompanyName"
                display as text
        paragraph
            InventoryLocation
                label is "Location"
            InventoryLocation.Name
                label is "LocationName"
                display as text
        single column
            Item
                select is MobileItemFilterSelection
            visible when (Item entered)
                Item.Description
                    label is "Description"
                    display as text
        single column
            Bin
                select is MobileBinSelect
            UnitOfMeasure
                select is MobileUnitOfMeasureList
        blank line
        single column
            ReplenishFromBin
                select is MobileBinSelect
        blank line
        single column
            ReorderPolicy
            ReorderPointCode
            ReorderQuantityCode
        paragraph
            ReorderPoint
            ReorderQuantity
        blank line
        paragraph
            OrderMultiple
            MaximumOrderQuantity
