AddComponentToRequisition is an ActionForm
    action is AddToRequisitionConstructComponent
    title is "AddComponentToRequisition"
    Layout
        display as text
            two column
                PrmCompany
                PrmRequisition
            single column
                Contract.RepresentativeText
                    label is "Contract"
            three column
                ComponentContractLine.ItemDescription
                ComponentContractLine.VendorItem
                ComponentContractLine.UOM
        paragraph
            PrmQuantity
        paragraph
            PrmBillCode
                label is "BillCode"
            text of "DefaultBillCodeFromRequisitionIs<PrmRequisition.DefaultBillCode>"
        two column distributed
            column1
                visible when (CanDisplaySerialNumber)
                    PrmSerialNumber
                        label is "Serial"
                visible when (CanDisplayManufacturingDate)
                    PrmManufacturingDate
                        label is "ManufacturingDate"
                visible when (CanDisplayExpirationDate)
                    PrmExpirationDate
                        label is "ExpirationDate"
            column2
                visible when (CanDisplayLot)
                    PrmLot
                        label is "Lot"
                visible when (CanDisplayGTIN)
                    PrmGTIN
                        label is "GTIN"
