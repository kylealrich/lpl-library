ItemOptions is a Form
    Layout
        three column independent
            column1
                paragraph
                    blank line
                paragraph
                    BarCode
                        label is "Barcode"
                paragraph
                    ModelNumber
                paragraph
                    SerialNumber
                paragraph
                    AssetLocation
                        label is "Location"
                paragraph
                    blank line
                paragraph
                    blank line
            column2
                paragraph
                    text of "InternalReferences"
                        right align
                        bold
                        color of blue
                paragraph
                    InvoiceCompany
                        label is "PayablesCompany"
                    InvoiceCompany.Name
                        no label
                        display as text
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
                paragraph
                    PayablesInvoice
                    PayablesInvoice.Description
                        no label
                        display as text
                paragraph
                    PayablesInvoiceDistribution
                        label is "DistributionSequence"
                paragraph
                    PurchaseOrder
                paragraph
                    Project
                    Project.Project.Description
                        no label
                        display as text
            column3
                paragraph
                    text of "ExternalReferences"
                        right align
                        bold
                        color of blue
                paragraph
                    AssetItemReferenceFields.ReferenceCompany
                paragraph
                    AssetItemReferenceFields.ReferenceVendor
                paragraph
                    AssetItemReferenceFields.ReferenceInvoice
                paragraph
                    AssetItemReferenceFields.ReferencePurchaseOrder
                paragraph
                    AssetItemReferenceFields.ReferenceSequenceNumber
                paragraph
                    AssetItemReferenceFields.ReferenceProject
