DocumentTemplatesForm is a Form
    Layout
        paragraph
            UseIDM
                label is "UseIDMTemplate"
        visible when (UseIDM)
            header2 of "PurchaseOrderIDMTemplate"
            two column
                column1
                    header3 of "Document"
                    paragraph
                        PurchaseOrderTemplate
                            label is "PurchaseOrder"
                            select is PurchaseOrderIDMTemplate
                        button of "<PurchaseOrderTemplate.Name>"
                            link is external "<PurchaseOrderTemplate.RetrieveUrl>"
                            display as link
                        visible when (MissingIDMTemplate)
                            text of "<MissingTemplateMessage>"
                                bold
                    paragraph
                        PODocumentFileName
                        visible when (PODocumentFileName entered)
                            text of "SampleFilename:<SamplePODocumentFileName>.pdf"
                column2
                    header3 of "Email"
                    paragraph
                        PurchaseOrderIDMEmailTemplate
                            label is "EmailTemplate"
                            select is PurchaseOrderIDMEmailTemplate
                        button of "<PurchaseOrderIDMEmailTemplate.Name>"
                            link is external "<PurchaseOrderIDMEmailTemplate.RetrieveUrl>"
                            display as link
                    paragraph
                        PurchaseOrderIDMEmailFrom
                            label is "From"
                    paragraph
                        PurchaseOrderIDMEmailSubject
                            label is "Subject"
            header2 of "ReceivingDeliveryAndPutawayIDMTemplate"
            paragraph
                ReceivingDeliveryAndPutawayIDMTemplate
                    label is "ReceivingDeliveryAndPutaway"
                    select is ReceivingDeliveryAndPutawayIDMTemplate
                button of "<ReceivingDeliveryAndPutawayIDMTemplate.Name>"
                    link is external "<ReceivingDeliveryAndPutawayIDMTemplate.RetrieveUrl>"
                    display as link
        visible when (not UseIDM)
            header2 of "PurchaseOrderTemplate"
            single column
                header3 of "Document"
                paragraph
                    PurchaseOrderDocument
                        label is "PurchaseOrder"
                        select is PurchaseOrderDocumentListByCompany
                    PurchaseOrderDocument.PurchaseOrderDocumentTemplate.Title
                        no label
                        display as text
                visible when (MissingTemplate)
                    text of "<MissingTemplateMessage>"
                        bold
            single column
                header3 of "Email"
                paragraph
                    PurchaseOrderIDMEmailFrom
                        label is "From"
                paragraph
                    PurchaseOrderIDMEmailSubject
                        label is "Subject"
                paragraph
                    PurchaseOrderEmailBody
                        label is "Body"
