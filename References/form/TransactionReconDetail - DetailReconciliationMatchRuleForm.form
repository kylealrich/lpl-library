DetailReconciliationMatchRuleForm is a Form
    title is "DetailReconciliationMatchRuleInformation"
    Layout
        display as text
            paragraph
                ReconciliationAccountStructure
                ReconciliationAccountStructure.Description
                    no label
            visible when (ReconciliationAccount.LevelType.Group)
                two column
                    ReconciliationAccount.ReconciliationGroup
            visible when (ReconciliationAccount.LevelType.NonAccount)
                two column
                    ReconciliationAccount.NonAccountReconciliation
            visible when (ReconciliationAccount.IsAccountWithinGroup)
                two column
                    ReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
            visible when (ReconciliationAccount.LevelType.Account)
                paragraph
                    ReconciliationAccount.ReconciliationCodeBlock
                    ReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                        no label
                    ReconciliationAccount.ReconciliationCodeBlock.AccountingEntity.FunctionalCurrency
                        no label
            two column
                LineMatchField
                ReconTransactionType
            blank line
            header2 of "LineMatchFieldValueWasAssignedByTheFollowingDetailReconciliationMatchRule"
            paragraph
                ReconciliationAccount.DetailReconciliationMatchRuleGroup
                ReconciliationAccount.DetailReconciliationMatchRuleGroup.Description
                    no label
                    display as text
            paragraph
                DetailReconciliationMatchRule
                DetailReconciliationMatchRule.Description
                    no label
                    display as text
            blank line
            display as text
                visible when (DetailReconciliationMatchRule.MatchRuleType.InterfaceAndGlobalLedger)
                    two column distributed
                        column1
                            header2 of "InterfaceParameters"
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRule
                                text of "Or"
                                DetailReconciliationMatchRule.InterfaceApplyToAll
                            visible when (DetailReconciliationMatchRule.InterfaceRuleEntered)
                                paragraph
                                    DetailReconciliationMatchRule.InterfaceRule.Condition
                                        no label
                            DetailReconciliationMatchRule.InterfaceLineMatchField
                        column2
                            header2 of "GlobalLedgerParameters"
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRule
                                text of "Or"
                                DetailReconciliationMatchRule.GeneralLedgerApplyToAll
                            visible when (DetailReconciliationMatchRule.GeneralLedgerRuleEntered)
                                paragraph
                                    DetailReconciliationMatchRule.GeneralLedgerRule.Condition
                                        no label
                            DetailReconciliationMatchRule.GeneralLedgerLineMatchField
                    header2 of "ModificationOptions"
                    visible when (not DetailReconciliationMatchRule.DisableReconApplyingModificationOptionsToVariablesOnly)
                        paragraph
                            text of "*ModificationOptionsWillOnlyBeAppliedToTheVariablePortionOfThe_\\Interface_\\Line_\\Match_\\FieldAnd_\\Global_\\Ledger_\\Line_\\Match_\\Field"
                                italics
                    two column distributed
                        column1
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRemoveLeadingZeros
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRemoveAlphaCharacters
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRemoveCharacterString
                                DetailReconciliationMatchRule.InterfaceRemoveString
                                    no label
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRemoveCharactersBefore
                                DetailReconciliationMatchRule.InterfaceRemoveBefore
                                    no label
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRemoveCharactersAfter
                                DetailReconciliationMatchRule.InterfaceRemoveAfter
                                    no label
                        column2
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRemoveLeadingZeros
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRemoveAlphaCharacters
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRemoveCharacterString
                                DetailReconciliationMatchRule.GeneralLedgerRemoveString
                                    no label
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRemoveCharactersBefore
                                DetailReconciliationMatchRule.GeneralLedgerRemoveBefore
                                    no label
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRemoveCharactersAfter
                                DetailReconciliationMatchRule.GeneralLedgerRemoveAfter
                                    no label
                visible when (DetailReconciliationMatchRule.MatchRuleType.Interface)
                    two column distributed
                        column1
                            header2 of "InterfaceParameters"
                            paragraph
                                DetailReconciliationMatchRule.InterfaceRule
                                text of "Or"
                                DetailReconciliationMatchRule.InterfaceApplyToAll
                            visible when (DetailReconciliationMatchRule.InterfaceRuleEntered)
                                paragraph
                                    DetailReconciliationMatchRule.InterfaceRule.Condition
                                        no label
                            DetailReconciliationMatchRule.InterfaceLineMatchField
                    header2 of "ModificationOptions"
                    visible when (not DetailReconciliationMatchRule.DisableReconApplyingModificationOptionsToVariablesOnly)
                        paragraph
                            text of "*ModificationOptionsWillOnlyBeAppliedToTheVariablePortionOfThe_\\Interface_\\Line_\\Match_\\Field"
                                italics
                    paragraph
                        DetailReconciliationMatchRule.InterfaceRemoveLeadingZeros
                    paragraph
                        DetailReconciliationMatchRule.InterfaceRemoveAlphaCharacters
                    paragraph
                        DetailReconciliationMatchRule.InterfaceRemoveCharacterString
                        DetailReconciliationMatchRule.InterfaceRemoveString
                            no label
                    paragraph
                        DetailReconciliationMatchRule.InterfaceRemoveCharactersBefore
                        DetailReconciliationMatchRule.InterfaceRemoveBefore
                            no label
                    paragraph
                        DetailReconciliationMatchRule.InterfaceRemoveCharactersAfter
                        DetailReconciliationMatchRule.InterfaceRemoveAfter
                            no label
                visible when (DetailReconciliationMatchRule.MatchRuleType.GlobalLedger)
                    two column distributed
                        column1
                            header2 of "GlobalLedgerParameters"
                            paragraph
                                DetailReconciliationMatchRule.GeneralLedgerRule
                                text of "Or"
                                DetailReconciliationMatchRule.GeneralLedgerApplyToAll
                            visible when (DetailReconciliationMatchRule.GeneralLedgerRuleEntered)
                                paragraph
                                    DetailReconciliationMatchRule.GeneralLedgerRule.Condition
                                        no label
                            DetailReconciliationMatchRule.GeneralLedgerLineMatchField
                    header2 of "ModificationOptions"
                    visible when (not DetailReconciliationMatchRule.DisableReconApplyingModificationOptionsToVariablesOnly)
                        paragraph
                            text of "*ModificationOptionsWillOnlyBeAppliedToTheVariablePortionOfThe_\\Global_\\Ledger_\\Line_\\Match_\\Field"
                                italics
                    paragraph
                        DetailReconciliationMatchRule.GeneralLedgerRemoveLeadingZeros
                    paragraph
                        DetailReconciliationMatchRule.GeneralLedgerRemoveAlphaCharacters
                    paragraph
                        DetailReconciliationMatchRule.GeneralLedgerRemoveCharacterString
                        DetailReconciliationMatchRule.GeneralLedgerRemoveString
                            no label
                    paragraph
                        DetailReconciliationMatchRule.GeneralLedgerRemoveCharactersBefore
                        DetailReconciliationMatchRule.GeneralLedgerRemoveBefore
                            no label
                    paragraph
                        DetailReconciliationMatchRule.GeneralLedgerRemoveCharactersAfter
                        DetailReconciliationMatchRule.GeneralLedgerRemoveAfter
                            no label
                header2 of "ReconciliationOptions"
                single column
                    DetailReconciliationMatchRule.MatchType
                paragraph
                    DetailReconciliationMatchRule.ReconciliationToleranceAmount
                single column
                    DetailReconciliationMatchRule.ReconciliationToleranceAccount
                        compact format
                    visible when (DetailReconciliationMatchRule.ReconciliationToleranceAccount entered)
                        DetailReconciliationMatchRule.ReconciliationToleranceAccount.CompactDescription
                            no label
                            display as text
                    text of "Or"
                    paragraph
                        DetailReconciliationMatchRule.ReconciliationToleranceAllocation
                        DetailReconciliationMatchRule.ReconciliationToleranceAllocation.Description
                            no label
                            display as text
