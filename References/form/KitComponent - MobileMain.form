MobileMain is a Form
    title is "Main"
    Layout
        single column
            display as text
                KitItem.DerivedItemGroup
                    label is "ItemGroup"
                KitItem.DerivedKitCompany
                    label is "Company"
                KitItem.DerivedKitLocation
                    label is "Location"
        paragraph
            KitComponent.ComponentSequence
                label is "Sequence"
                display as text
            visible when (IsMakeToOrderKit)
                visible when (not RequiredField)
                    KitComponent.OptionalComponentSequence
                        label is "OptionalSequence"
        visible when (IsMakeToStockKit)
            single column
                InvLocation
                visible when (InvLocation entered)
                    InvLocation.Name
                        label is "Location"
                        display as text
        single column
            ComponentItem
                label is "Component"
                display as text
            ComponentItem.Description
                display as text
        single column
            visible when (not ComponentItem.CatchWeightCode.NotCatchWeight)
                ComponentItem.SecondaryUOM
                    label is "U\\O\\M"
                    display as text
            visible when (ComponentItem.CatchWeightCode.NotCatchWeight)
                ComponentItem.StockUOM
                    label is "U\\O\\M"
                    display as text
        single column
            Quantity
        visible when (KitItem.IsMakeToOrder)
            single column
                KitItem.Notes
                    display as text
                KitItem.ProcedureCode
                    label is "Procedure"
                    display as text
                KitItem.OrderSize
                    label is "StandardOrderSize"
                    display as text
        paragraph
            StartDate
            StopDate
        single column
            RequiredField
                label is "Required"
        visible when (IsMakeToStockKit)
            paragraph
                ComponentType
                    label is "ComponentType"
        two column table
            column1
                visible when (IsMakeToStockKit)
                    QuantityTolerancePercentage
                        label is "QuantityTolerancePercentage"
            column2
                ZeroQuantity
                    label is "Zero"
        visible when (IsMakeToStockKit)
            paragraph
                WasteAccount
                    label is "WasteAccount"
                    compact format
        visible when (IsMakeToStockKit)
            paragraph
                MaterialExpenseAccount
                    label is "MaterialExpenseAccount"
                    compact format
