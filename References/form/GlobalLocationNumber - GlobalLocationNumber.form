GlobalLocationNumber is a Form
    Layout
        paragraph
            visible when (not ItemGroupEntered)
                ItemGroup
                ItemGroup.Description
                    no label
                    display as text
            visible when (ItemGroupEntered)
                ItemGroup.ItemGroupDescription
                    label is "ItemGroup"
                    display as text
        paragraph
            visible when (not GlobalLocationNumberEntered)
                GlobalLocationNumber
                    label is "GlobalLocationNumber"
            visible when (GlobalLocationNumberEntered)
                GlobalLocationNumber
                    label is "GlobalLocationNumber"
                    display as text
            Description
        two column
            ParentGlobalLocationNumber
                label is "Parent"
            Active
        paragraph
            visible when (not IsRecordExist)
                GlobalLocationNumberType
            visible when (GlobalLocationNumberType.GeneralLedgerCompany)
                Company
            visible when (GlobalLocationNumberType.Bin)
                CompanyLocationBin
            visible when (GlobalLocationNumberType.InventoryCompany)
                CompanyLocationBin.Company
            visible when (GlobalLocationNumberType.InventoryLocation)
                CompanyLocationBin.Company
                CompanyLocationBin.InventoryLocation
            visible when (GlobalLocationNumberType.Vendor)
                VendorAndVendorLocation.Vendor
            visible when (GlobalLocationNumberType.VendorLocation)
                VendorAndVendorLocation
            visible when (GlobalLocationNumberType.Buyer)
                Buyer
            visible when (GlobalLocationNumberType.ManufacturerCode)
                Manufacturer.ManufacturerCode
            visible when (GlobalLocationNumberType.ManufacturerDivision)
                Manufacturer
            visible when (GlobalLocationNumberType.RequestingLocation)
                RequestingCompanyAndLocation.RequestingCompany
                RequestingCompanyAndLocation.RequestingLocation
            visible when (GlobalLocationNumberType.PurchasingVendor)
                PurchasingVendorAndPurchaseFromLocation.PurchasingVendor
                    label is "PurchasingVendor"
            visible when (GlobalLocationNumberType.PurchaseFromLocation)
                PurchasingVendorAndPurchaseFromLocation.PurchasingVendor
                    label is "PurchasingVendor"
                PurchasingVendorAndPurchaseFromLocation.PurchaseFromLocation
