AutoCashApplication is an ActionForm
    action is AutoCashApplication
    Layout
        two column distributed
            column1
                paragraph
                    PrmCompany
                        label is "Company"
                    PrmCompany.Name
                        no label
                        display as text
                paragraph
                    PrmCompanyGroup
                        label is "CompanyGroup"
                paragraph
                    PrmSelectOnly
                        label is "SelectedApplicationsOnly"
                            left of field
                    PrmEFTOrigin
                        label is "EFTOrigin"
                            left of field
                PrmGlDate
                    label is "PostDate"
                PrmOverride
                    label is "PostDateOverride"
                        left of field
                PrmBatchNumber
                    label is "PaymentBatch"
                    select is ReleasedBatches
            column2
                paragraph
                    PrmOperator
                        label is "Operator"
                        show up to 20 characters
                    PrmOperator.Name
                        no label
                        display as text
                PrmNatCredits
                    label is "NationalAccountCredits"
                        left of field
                PrmOverrideMethod
                    label is "OverrideMethod"
                PrmCurrencyOverride
                    label is "CurrencyOverride"
                        left of field
                PrmFirstAttemptRemittanceOnly
                    label is "FirstAttemptRemittanceOnly"
                        left of field
                visible when (PrmOverrideMethod.UserDefined)
                    PrmApplicationCode
                        label is "CashApplicationCode"
        display as text
            visible when (PrmVariance entered)
                header2 of "Algorithm"
                PrmVariance
                    label is "Variance"
            visible when (PrmReasonCode entered)
                PrmReasonCode
                    label is "ReasonCode"
                    select is ReceivableReasonCodeOSList
            visible when (PrmMaxInvoices entered)
                PrmMaxInvoices
                    label is "MaximumInvoices"
            visible when (PrmCombination entered)
                PrmCombination
                    label is "Combination"
                blank line
