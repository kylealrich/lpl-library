Tax is a Form
    Layout
        paragraph
            Taxable
        paragraph
            TaxCode
            TaxCode.Description
                no label
                display as text
        paragraph
            TransactionTaxableAmount
                label is "TaxableAmount"
            PercentTaxable
                label is "_OrPercent"
        paragraph
            TaxUsageCode
            TaxUsageCode.Description
                no label
                display as text
        blank line
        visible when (AllowLandedTax)
            paragraph
                TransactionLandTax
                    label is "LandedTax"
                    display as text
        paragraph
            TotalTaxAmount
                display as text
        paragraph
            TotalPaymentAmount
                display as text
