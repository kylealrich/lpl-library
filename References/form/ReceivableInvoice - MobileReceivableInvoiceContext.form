MobileReceivableInvoiceContext is a Form
    title is "Transaction"
    Layout
        single column
            Company
                display as text
                select is Companies
        single column
            Company.Name
                label is "CompanyName"
                display as text
        paragraph
            BatchNumber
                label is "InvoiceBatch"
                display as text
            Status
                display as text
        paragraph
            Company.Currency
                label is "Currency"
                display as text
            visible when (OriginalCurrency entered)
                OriginalCurrency
                    display as text
        paragraph
            ReceivableInvoiceType
                label is "Type"
                display as text
            ReceivableInvoice
                label is "Transaction"
                display as text
        two column
            ReceivableProcessLevel
                label is "ProcessLevel"
                display as text
            ReceivableProcessLevel.Name
                no label
                display as text
        single column
            CompanyCustomerRel.Affiliate
                label is "Affiliate"
            TransientSignedTransactionAmount
                label is "Amount"
                display as text
            OpenReceivableInvoiceAmountSigned
                label is "OpenAmount"
                display as text
