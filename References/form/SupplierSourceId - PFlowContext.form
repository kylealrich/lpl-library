PFlowContext is a Form
    Layout
        header3 of "SupplierContact<MainContact.FirstAndLastName>"
        paragraph
            SupplierSourceId
                label is "SupplierContact"
            MainContact.FirstAndLastName
                no label
        paragraph
            Supplier.Active
            RegistrationStatus
        header3 of "MailingAddressInformation"
        single column
            visible when (SupplierGroup.DisplayTypeForRegistration)
                LocationAddress
                    form is PostalAddressMinimumWithType
            visible when (not SupplierGroup.DisplayTypeForRegistration)
                LocationAddress
                    form is PostalAddressMinimum
        header3 of "BankInformation"
        form is BankInformationFormNoMask
