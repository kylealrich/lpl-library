GLRowDimension is a Form
    is primary
    title is "RowDimension"
    Actions
        action is save
        action is save and close
            action icon is save
        action is save and new
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Layout
        two column distributed
            column1
                Dimension
                    show up to 100 characters
                    when value changed
                        ColumnHeader =  DerivedDimensionHeaderLabel
                visible when (AddPageBreakIsValid)
                    AddPageBreak
                SummaryLevelOnly
                PostingLevelOnly
                visible when (not PostingLevelOnly)
                    paragraph
                        Levels
                        StartingLevel
                DisplayValue
                    show up to 100 characters
                visible when (PostingLevelOnly)
                    RepeatDisplayValue
                ColumnHeader
                paragraph
                    ColumnSize
                    OffsetPadding
                    Indent
                paragraph
                    FormatHeader
                        label is "FormatHeader"
                    visible when (not FormatHeader)
                        HeaderAlignment
                            label is "HeaderTextAlignment"
                            display only
                    visible when (FormatHeader)
                        HeaderAlignment
                            label is "HeaderTextAlignment"
                    visible when (not FormatHeader)
                        Bold
                            display only
                    visible when (FormatHeader)
                        Bold
                    visible when (not FormatHeader)
                        Italics
                            display only
                    visible when (FormatHeader)
                        Italics
                visible when (ShowSuppressTotals)
                    paragraph
                        TotalsAtBottom
                            initial value is true
                        SuppressTotal
                            label is "SuppressAllTotals"
                SuppressBlankValue
                    label is "SuppressBlankValues"
            column2
                header4 of "Preview"
                paragraph
                    manual representation
                        representation name is dimensionPreview_ST
                        show up to 25 lines
                        Property Mapping
                            levels = Levels
                            padding = (Indent * 7)
                            dimension = ColumnHeader
                            posting = PostingLevelOnly
                            summary = SummaryLevelOnly
                            totalsAtBottom = TotalsAtBottom
                            suppressTotal = SuppressTotal
                            startingLevel = StartingLevel
