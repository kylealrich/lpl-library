CashForecastPeriodAmountForm is a Form
    is primary
    title is "CashForecastPeriodAmount"
    Layout
        paragraph
            CashForecast
            CashForecast.Description
                no label
                display as text
        paragraph
            CashForecastAccount.CashManagementAccount
            CashForecastAccount.CashManagementAccount.Title
                no label
                display as text
        single column
            CashForecastCategory.CashTransactionCategory
            CashForecastPeriod
        paragraph
            ForecastAmount
            CashForecastAccount.CashManagementAccount.Currency
                no label
                display as text
        visible when (AccountCurrencyNotCorporateBaseCurrency)
            paragraph
                CorporateBaseAmount
                CashManagementGroup.Currency
                    no label
                    display as text
        visible when (AccountCurrencyNotLocationCurrency)
            paragraph
                LocationAmount
                CashForecastAccount.CashManagementAccount.CashManagementLocation.Currency
                    no label
                    display as text
            Comment
                use text area of 3 lines
