APInvoiceApprovalForm is a Form
    title is "PayablesInvoiceApprovalSettings"
    Layout
        header2 of "GeneralSettings"
        single column
            CorporateCalendar
            ProcessRoutingRulesByHierarchy
            EvaluateRoutingRulesOnDistributionCreate
            DistributionEntryOnApproval
            EnforceMaxInvoiceApprovalAmount
                label is "EnforceMaximumInvoiceApprovalAmount"
            InvoicePostDateDefaultOption
            UsingDocMgmtSystem
            RequireReasonCodeForManualInvoiceApproval
        visible when (UsingDocMgmtSystem)
            header2 of "DocumentManagementSettings"
            three column
                DocMgmtPartner
                DocMgmtSystemKey
                StoreDocumentLocally
            visible when (DocMgmtPartner.MHCSoftware)
                single column
                    visible when (DisplayEditMHCOAuthRecord)
                        header3 of "OAuthRecord"
                        paragraph
                            MHCOAuthRel.OAuth
                                label is "OAuthRecord"
                            button of "Edit"
                                link is NavToMHCOAuth
                                display as link
                        MHCOAuthRel.Type
                        MHCOAuthRel.ApplicationSecret
                            show up to 120 characters
                        MHCOAuthRel.ApplicationKey
                            show up to 120 characters
                        MHCOAuthRel.AccessTokenURL
                            show up to 120 characters
                    visible when (DisplayCreateMHCOAuthRecord)
                        header3 of "OAuthRecord"
                        button of "CreateOAuthRecord"
                            form invoke is MHCOAuthRecord
                            display as link
                        text of "O_\\AuthRecordDoesNotExist"
                            bold
                    visible when (DisplayEditMHCConfigParam)
                        header3 of "ConfigurationParameter"
                        paragraph
                            MHCConfigParamRel.ConfigurationParameter.ConfigurationID
                            button of "Edit"
                                link is NavToMHCConfigParm
                                display as link
                        MHCConfigParamRel.ConfigurationParameter.Name
                        MHCConfigParamRel.Type
                        MHCConfigParamRel.Length
                        MHCConfigParamRel.Value
                            show up to 120 characters
                    visible when (DisplayCreateMHCConfigParam)
                        header3 of "ConfigurationParameter"
                        single column
                            button of "CreateConfigurationParameter"
                                form invoke is MHCConfigurationParameterRecord
                                display as link
                            text of "ConfigurationParameterRecordDoesNotExist"
                                bold
            visible when (DocMgmtPartner.HylandSoftware)
                two column
                    column1
                        header2 of "OAuth"
                        visible when (DisplayEditHylandOAuthRecord)
                            paragraph
                                button of "Edit"
                                    link is NavToHylandOAuth
                                    display as link
                            display as text
                                HylandOAuthRel.Type
                                HylandOAuthRel.ApplicationSecret
                                    show up to 120 characters
                                HylandOAuthRel.ApplicationKey
                                    show up to 120 characters
                                HylandOAuthRel.AccessTokenURL
                                    show up to 120 characters
                        visible when (DisplayCreateHylandOAuthRecord)
                            header3 of "OAuthRecord"
                            button of "CreateOAuthRecord"
                                form invoke is HylandOAuthRecord
                                display as link
                            text of "O_\\AuthRecordDoesNotExist"
                                bold
                    column2
                        header2 of "ConfigurationParameters"
                        visible when (DisplayEditHylandImageConfigParam)
                            paragraph
                                text of "DocumentImage"
                                button of "Edit"
                                    link is NavToHylandImageConfigParm
                                    display as link
                            display as text
                                HylandImageConfigParamRel.ConfigurationParameter.Name
                                HylandImageConfigParamRel.Value
                                    show up to 120 characters
                        visible when (DisplayCreateHylandImageConfigParam)
                            paragraph
                                text of "DocumentImage"
                                button of "CreateConfigurationParameter"
                                    form invoke is HylandImageConfigurationParameterRecord
                                    display as link
                            paragraph
                                text of "ConfigurationParameterRecordDoesNotExist"
                                    bold
                        visible when (DisplayEditHylandUrlConfigParam)
                            paragraph
                                text of "DocumentUrl"
                                button of "Edit"
                                    link is NavToHylandUrlConfigParm
                                    display as link
                            display as text
                                HylandUrlConfigParamRel.ConfigurationParameter.Name
                                HylandUrlConfigParamRel.Value
                                    show up to 120 characters
                        visible when (DisplayCreateHylandUrlConfigParam)
                            paragraph
                                text of "DocumentUrl"
                                button of "CreateConfigurationParameter"
                                    form invoke is HylandUrlConfigurationParameterRecord
                                    display as link
                            paragraph
                                text of "ConfigurationParameterRecordDoesNotExist"
                                    bold
                        visible when (DisplayEditHylandUpdateConfigParam)
                            paragraph
                                text of "DocumentUpdate"
                                button of "Edit"
                                    link is NavToHylandUpdateConfigParm
                                    display as link
                            display as text
                                HylandUpdateConfigParamRel.ConfigurationParameter.Name
                                HylandUpdateConfigParamRel.Value
                                    show up to 120 characters
                        visible when (DisplayCreateHylandUpdateConfigParam)
                            paragraph
                                text of "DocumentUpdate"
                                button of "CreateConfigurationParameter"
                                    form invoke is HylandUpdateConfigurationParameterRecord
                                    display as link
                            paragraph
                                text of "ConfigurationParameterRecordDoesNotExist"
                                    bold
        header2 of "InvoiceEmailSettings"
        header3 of "InvoiceSubmittedForApproval"
        single column
            InvoiceApprovalEmailSubject
                label is "EmailSubject"
            InvoiceApprovalEmailContent
                label is "EmailContent"
                use text area of 10 lines
        two column
            InvoiceApprovalIncludeLink
            InvoiceApprovalIncludeRelatedDocs
        header3 of "InvoiceApproved"
        single column
            InvoiceApprovedEmailSubject
                label is "EmailSubject"
            InvoiceApprovedEmailContent
                label is "EmailContent"
                use text area of 10 lines
            InvoiceApprovedIncludeRelatedDocs
        header3 of "InvoiceRejected"
        single column
            InvoiceRejectEmailSubject
                label is "EmailSubject"
            InvoiceRejectEmailContent
                label is "EmailContent"
                use text area of 10 lines
            InvoiceRejectIncludeRelatedDocs
        header3 of "EmailInvoice"
        single column
            InvoiceEmailSubject
                label is "EmailSubject"
            InvoiceEmailContent
                label is "EmailContent"
                use text area of 10 lines
            InvoiceEmailIncludeRelatedDocs
