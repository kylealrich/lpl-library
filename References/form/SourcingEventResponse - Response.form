Response is a Form
    title is "EventResponse"
    Layout
        two column
            visible when (not LineResponsesExist)
                visible when (SourcingEvent.AllowResponseInOtherCurrency)
                    visible when (not VendorHasInvoiceCurrency)
                        EnteredCurrencyCode
                            label is "ResponseCurrency"
            visible when (LineResponsesExist)
                visible when (DifferentResponseCurrency)
                    EnteredCurrencyCode
                        label is "ResponseCurrency"
                        display as text
            visible when (SourcingEvent.AllowResponseInOtherCurrency)
                SourcingEvent.CurrencyCode
                    label is "EventCurrency"
                    display as text
        single column
            visible when (not LineResponsesExist)
                visible when (SourcingEvent.AllowResponseInOtherCurrency)
                    visible when (not VendorHasInvoiceCurrency)
                        text of "ResponseCanBeEnteredInADifferentCurrencyThanEventCurrency;IfNotEnteredEventCurrencyWillBeUsed"
        paragraph
            text of "<TermsLink2>"
                header3
                bold
            button of "<TermsAndConditionsString>"
                visible when (DisplayTerms)
                link is Terms
                display as link
        single column
            visible when (HasTermAndConditionWithAttachment)
                text of "TermsAndConditionsHaveAttachments;ToViewAttachmentsClick_View_Event_Details;Click_Terms_And_Conditions;View_Term_And_Condition_Attachments"
        single column
            blank line
            TermsAcceptedBySupplier
                label is "<TermsAcceptance>"
        visible when (AllowedToNegotiateTerms)
            single column
                text of "Or"
                RequestToNegotiateTerms
                    label is "<NegotiateAcceptance>"
                visible when (RequestToNegotiateTerms)
                    NegotiateTermsBox
                        label is "NegotiationComments"
                        use text area of 5 lines
                    NegotiatedTermsDocument.File
                        label is "NegotiationAttachment"
        blank line
        paragraph
            button of "ViewEventDetails"
                link is SupplierViewEvent
                display as link
            button of "ViewAttachments"
                visible when (SourcingEvent.SupplierAttachmentsExist)
                link is SupplierViewEventAttachments
                display as link
        header3 of "NoBidSelection"
        paragraph
            NoBid
                label is "<NoBidAcceptance>"
            visible when (NoBid)
                visible when (DisplayNoBidReason)
                    NoBidReason
                        label is "-Reason"
                        select is NoBidReasonSelect
        visible when (DisplayNoBidText)
            single column
                blank line
                text of "ToReverseNoBid:SelectActions,ModifyResponse,ThenUncheckThe'<NoBidAcceptance>'Field"
                    bold
