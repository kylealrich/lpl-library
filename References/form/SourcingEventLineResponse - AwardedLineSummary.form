AwardedLineSummary is a SummaryForm
    title is "AwardSummary"
    Layout
        header2 of "Supplier:<NotifiedSupplier.Supplier.SupplierName>"
            underline color of black
        header2 of "_"
        paragraph
            visible when (PoData)
                visible when (IsAwardedNotAlternate)
                    AwardQuantity
                visible when (not IsAwardedNotAlternate)
                    Quantity
            ResponseAmount.UnitPrice
                label is "UnitPrice"
            ExtendedPrice
        visible when (LineHasAddOnCharge)
            paragraph
                ResponseTotalAOC
                    label is "AOC"
                NetUnitPrice
                TotalResponse
                    label is "TotalBid"
        paragraph
            ResponseAmount.NoBid
                label is "NoBid"
            ResponseAmount.NoCharge
                label is "NoCharge"
        single column
            visible when (IsAwardedNotAlternate)
                AwardReason
            visible when (not IsAwardedNotAlternate)
                AwardReason
                    label is "NonAwardReason"
            DeliveryDateOverride
        two column
            visible when (SourcingEventLine.DisplayVendorItem)
                VendorItem
                    label is "VendorItemOverride"
                VendorItemDescription
                    label is "Description"
            visible when (not SourcingEventLine.DisplayVendorItem)
                VendorItemDescription
                    label is "ServiceDescription"
        two column
            visible when (SourcingEventLine.DisplayVendorItem)
                GlobalTradeItemNumber
                    label is "GTIN"
                GlobalTradeItemNumber.FullDescription
                    label is "GTINDescription"
        visible when (IsAwarded)
            visible when (PoData)
                single column
                    POCode
                paragraph
                    PurchaseOrder
                        label is "PONumber"
            blank line
            visible when (CmData)
                two column
                    Contract
                    Contract.Name
                        label is "ContractName"
