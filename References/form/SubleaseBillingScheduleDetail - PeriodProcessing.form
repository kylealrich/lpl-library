PeriodProcessing is an ActionForm
    action is PeriodProcessing
    title is "PeriodProcessing"
    Layout
        header4 of "PeriodProcessingBy:"
        single column
            PrmFormSelection
                no label
                display as horizontal radio buttons
        visible when (PrmFormSelection.Company)
            paragraph
                PrmCompany
                PrmCompany.Name
                    no label
                    display as text
        visible when (PrmFormSelection.HeadLease)
            paragraph
                PrmCompany
                PrmCompany.Name
                    no label
                    display as text
            paragraph
                PrmLease
                    select is ReleasedLeases
                PrmLease.Description
                    no label
                    display as text
        visible when (PrmFormSelection.Sublease)
            paragraph
                PrmCompany
                PrmCompany.Name
                    no label
                    display as text
            paragraph
                PrmLease
                    select is ReleasedLeases
                PrmLease.Description
                    no label
                    display as text
            paragraph
                PrmSublease
                visible when (PrmSublease entered)
                    paragraph
                        PrmSublease.BeginDate
                            no label
                            display as text
                        text of "-"
                        PrmSublease.EndDate
                            no label
                            display as text
        visible when (PrmFormSelection.CompanyGroup)
            paragraph
                PrmCompanyGroup
                PrmCompanyGroup.Description
                    no label
                    display as text
        header2 of "_"
        text of "_"
        paragraph
            PrmProcessThruDate
