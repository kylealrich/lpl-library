AttributeUpdateComposite is a CompositeForm
    is primary
    title is "UpdateAttributes"
    context form is AttributeUpdateContext
        background is theme color
    Actions
        action is UpdateAttributes
        action is RecheckErrors
            action icon is validate
            hide when invalid
        action is UpdateAttributesInstance
            hide when invalid
        action is SetToNotProcessed
            hide when invalid
        action is save
            label is "_"
    Attributes is a Panel
        form is AttributesForm
    OtherContractLinesFound is a Panel
        visible when (OtherContractLinesFound)
        list is OriginalRecordRel.OtherContractLinesList
    Errors is a Panel
        visible when (ErrorsExist)
        list is ContractLineAttributeError set.ContractLineAttributeErrorList
