BuyerPerformanceSumForm is a SummaryForm
    title is "BuyerPerformance"
    First Page Header
        Layout
            PrintDate
                right align
            header3 of "BuyerPerformance"
                center
    Layout
        visible when (PrintParameters)
            single column
                text of "Parameters:"
                PurchasingCompany
                    display when blank
                Buyer
                    display when blank
                paragraph
                    FromDate
                        label is "FromPurchaseOrderDate"
                    ThruDate
                        label is "ToPurchaseOrderDate"
                AbovePOAmount
                    display when blank
                EventRequired
                    display when blank
                blank line
        visible when (EventRequired)
            list is PurchaseOrderLineSourceRel.BuyerPerformancePOLineList
        visible when (not EventRequired)
            list is PurchaseOrderLineSourceRel.BuyerPerformancePOLineListNoEvents
