PurchaseTypeHeader is a Form
    title is "PurchaseTypeHeaderInformation"
    Layout
        two column
        visible when (not Template)
            paragraph
                Vendor
                    display as text
            two column
                column1 of 30%
                    ApPoPurchaseFrom.PurchaseFromLocation
                        label is "POVendorLocation"
                column2 of 70%
                    ApPoPurchaseFrom.VendorLocation
                        label is "OrAPVendorLocation"
        visible when (not StandingPurchaseType)
            two column
                column1 of 30%
                    PerOrderMinimumAmount
                column2 of 70%
                    PerOrderMaximumAmount
        visible when (ContractOrBlanketOrService)
            single column
                NotificationPercent
        two column
            column1 of 30%
                UOMSMustMatch
            column2 of 70%
                UseContractUOM
        single column
            UOMSMustMatchForSpecials
        single column
            LifetimeEdit
                label is "LifetimeMaxEdit"
            visible when (ContractAndNotManOrDist)
                AllowReferenceOfItemsNotOnContract
            LineLevelBreaks
        visible when (ContractPurchaseType)
            two column
                column1 of 30%
                    GroupPurchasingOrganization
                column2 of 70%
                    Stockless
        visible when (not Template)
            paragraph
                Buyer
                Buyer.Employee.PresentationNameSnapshot
                    no label
                    display as text
        paragraph
            visible when (BlanketOrStandingOrServices)
                POCode
        visible when (StandingPurchaseType)
            header2 of "StandingPurchaseTypes"
            two column
                column1 of 30%
                    ScheduleFrequency
                column2 of 70%
                    MaximumReleaseNumber
            single column
                DoNotIssue
        visible when (not ServicePurchaseType)
            visible when (not Template)
                two column
                    column1 of 30%
                        FreightTerm
                    column2 of 70%
                        ShipTerm
        two column
            TermsCode
                label is "PaymentTerms"
            TermsCode.Description
                no label
                display as text
        two column
            column1 of 30%
                PoUserField1
                    label is "UserField1"
            column2 of 70%
                PoUserField3
                    label is "UserField2"
        single column
            PoUserField5
                label is "UserField3"
        single column
            VendorAgreementReference
