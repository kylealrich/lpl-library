BuyerQAndAView is a Form
    title is "Question_andAnswer"
    Layout
        three column
            column1
                Company
                    display as text
                Supplier
                    display as text
                SupplierSourceId
                    label is "SupplierContact"
                    display as text
            column2
                SourcingEvent.EventVersionString
                    label is "Event#"
                    display as text
                Supplier.SupplierName
                    display as text
                SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContactName"
                    display as text
            column3
                SourcingEvent.Name
                    label is "EventName"
                    display as text
                blank line
                blank line
        blank line
        two column
            DateReceived
                label is "DateReceived"
                display as text
            AnswerPostDate
                label is "DateAnswered"
                display as text
            button of "<Attachment.Title>"
                view Attachment.File
                label is "QuestionAttachment"
                display as link
            button of "<AnswerAttachment.Title>"
                view AnswerAttachment.File
                label is "AnswerAttachment"
                display as link
        visible when (BuyerCreated)
            single column
                text of "QuestionCreatedByBuyer"
                    italics
        single column
            Question
                label is "Question"
                display as text
                use text area of 3 lines
        single column
            Answer
                label is "Answer"
                display as text
                use text area of 9 lines
