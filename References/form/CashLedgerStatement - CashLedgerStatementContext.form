CashLedgerStatementContext is a Form
    title is "BankStatement"
    Layout
        paragraph
            CashCode
            CashCode.Currency
                no label
                display as text
        paragraph
            CashLedgerStatement
                label is "BankStatement"
            StatementStatus
                display as text
        blank line
        paragraph
            Company
            Company.OrigCompany.Name
                no label
                display as text
        two column
            ReconciliationStatementDate
        two column
            BeginningReconciliationStatementBalance
                label is "BeginningBalance"
            EndingReconciliationStatementBalance
                label is "EndingBalance"
        header2 of "BankTransactionCodes"
        two column
            paragraph
                CustomerBankTransactionCode
                    label is "CustomerReceipt"
                CustomerBankTransactionCode.Description
                    no label
                    display as text
            paragraph
                VendorBankTransactionCode
                    label is "VendorPayment"
                VendorBankTransactionCode.Description
                    no label
                    display as text
        two column
            paragraph
                BankTransactionCode
                    label is "GlobalLedger"
                BankTransactionCode.Description
                    no label
                    display as text
            paragraph
                ReconciliationBankTransactionCode
                    label is "Reconciliation"
                ReconciliationBankTransactionCode.Description
                    no label
                    display as text
