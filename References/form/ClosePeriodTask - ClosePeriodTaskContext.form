ClosePeriodTaskContext is a Form
    Layout
        visible when (UnassignedTask)
            paragraph
                UnassignedMessage
                    no label
                    display as tag
                        color of green when (UnassignedTask)
        visible when (not ShowPercentComplete)
            paragraph
                TaskStatus
                    label is "Status"
                    display as tag
                        color of blue when (TaskStatus.Scheduled)
                        color of yellow when (TaskStatus.InProcess)
                        color of yellow when (TaskStatus.PendingApproval)
                        color of green when (TaskStatus.Closed)
                        color of gray when (TaskStatus.Voided)
                visible when (IsPendingApproval)
                    DisplayByCurrentApproverDesc
                        label is "_"
                        display as text
                visible when (OneTimeTaskWaitingApproval)
                    DisplayByCurrentOneTimeApproverMsg
                        label is "_"
                        display as text
        visible when (ShowPercentComplete)
            three column distributed
                column1
                    TaskStatus
                        label is "Status"
                        display as tag
                            color of blue when (TaskStatus.Scheduled)
                            color of yellow when (TaskStatus.InProcess)
                            color of yellow when (TaskStatus.PendingApproval)
                            color of green when (TaskStatus.Closed)
                            color of gray when (TaskStatus.Voided)
                column2
                    PercentCompleteDateDerived
                        display as text
                    PercentCompleteEnteredByDerived
                        display as text
                column3
                    visible when (PercentCompleteDerived entered)
                        PercentCompleteDerived
                            display as text
                    PercentCompleteCommentDerived
                        display as text
