SchoolActivityAccountForm is a CompositeForm
    is primary
    title is "<mode>ActivityAccount"
    show panel control on left
    Actions
        action is Create
        action is AssignActivityToReceipt
            hide when invalid
        action is AssignToStudent
            hide when invalid
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    ActivityAccount is a Panel
        form is SchoolActivityAccountContextForm
    PeriodActivityBalances is a Panel
        visible when (SchoolActivityAccount.StudentActivityAccount.ActivityLevel.Detail)
        list is SchoolActivityAccountBalanceRel.PeriodActivityBalanceList
    StudentsAssignedToActivity is a Panel
        visible when (HasStudentActivity)
        list is StudentAssignedActivity set.ActivitySummaryByStudentList
