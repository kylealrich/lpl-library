VendorReturn is an ActionForm
    action is VendorReturn
    title is "VendorReturn"
    Layout
        display as text
            three column distributed
                RecallNotice.RepresentativeText
                paragraph
                    RecallProduct
                    RecallProduct.ProductName
                        no label
                paragraph
                    RecallProductItem
                    Description
                        no label
        single column
            ActionType
                no label
                display as horizontal radio buttons
        visible when (IsItemMaster)
            three column distributed
                paragraph
                    Quantity
                    Item.StockUOM
                        no label
                        display as text
        visible when (not IsItemMaster)
            three column distributed
                paragraph
                    Quantity
                    TranUom
                        no label
        visible when (ActionType.Create)
            three column distributed
                paragraph
                    VendorReturnGroup.InventoryCompany
                        label is "Company"
                    VendorReturnGroup.InventoryCompany.Name
                        no label
                        display as text
                paragraph
                    VendorReturnGroup.InventoryLocation
                        label is "Location"
                    VendorReturnGroup.InventoryLocation.Name
                        no label
                        display as text
                paragraph
                    VendorReturnGroup.Vendor
                    VendorReturnGroup.Vendor.VendorSearchName
                        no label
                        display as text
            three column distributed
                VendorReturnGroup.VendorLocation
                    label is "PurchaseFromLocation"
                paragraph
                    VendorReturnGroup.Buyer
                        label is "Buyer"
                    VendorReturnGroup.Buyer.Employee.PresentationNameSnapshot
                        no label
                        display as text
                paragraph
                    VendorReturnGroup.PayablesProcessLevel
                        label is "ProcessLevel"
                    VendorReturnGroup.PayablesProcessLevel.Name
                        no label
                        display as text
        visible when (ActionType.Append)
            paragraph
                PurchasingCompany
                PurchasingCompany.Name
                    no label
                    display as text
            paragraph
                VendorReturn
                    select is OpenReturns
                VendorReturn.Vendor
                    no label
                    display as text
        visible when (ActionType.Associate)
            paragraph
                PurchasingCompany
                PurchasingCompany.Name
                    no label
                    display as text
            paragraph
                VendorReturn
                    select is OpenReturns
                VendorReturn.Vendor
                    no label
                    display as text
            paragraph
                VendorReturnLine
                    label is "LineNumber"
                VendorReturnLine.Item
                    display as text
                VendorReturnLine.ReturnQuantity
                    display as text
        visible when (CatchWeight)
            blank line
            paragraph
                CtwSecondaryQty
                    label is "SecondaryQuantity"
                Item.SecondaryUOM
                    no label
                    display as text
