AttachmentForm is a Form
    is primary
    title is "Attachment"
    Layout
        paragraph
            VendorGroup
                display as text
            VendorGroup.Description
                no label
                display as text
        paragraph
            Vendor
                display as text
            Vendor.Vendor.VendorName
                no label
                display as text
        single column
            PurchasingVendorAttachment
                label is "AttachmentNumber"
                display as text
            CommentName
            CommentText
        paragraph
            Attachment
                compact format
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
