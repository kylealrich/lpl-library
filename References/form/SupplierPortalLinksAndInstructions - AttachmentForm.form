AttachmentForm is a Form
    title is "SupplierPortalLinksAndInstructions"
    Layout
        three column
            SupplierGroup
                display as text
            SupplierGroup.Description
                no label
                display as text
            SupplierPortalLinksAndInstructions
                display as text
        blank line
        single column
            Instructions
                label is "Description"
            DisplayToAnonymousUsers
            Active
            DisplayOrder
                display as text
        paragraph
            visible when (AttachmentExists)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (AttachmentExists)
                button of "View"
                    view Attachment.File
                    display as link
