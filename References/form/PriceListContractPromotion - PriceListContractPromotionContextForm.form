PriceListContractPromotionContextForm is a Form
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            visible when (IsPriceList)
                PriceListContractPromotion.ListName
                    label is "PriceList"
                    display as text
                Description
                    no label
                    display as text
        paragraph
            visible when (IsContract)
                PriceListContractPromotion.Customer
                    label is "Customer"
                    display as text
                PriceListContractPromotion.Customer.Name
                    no label
                    display as text
        paragraph
            visible when (IsContract)
                PriceListContractPromotion.ListName
                    label is "Contract"
                    display as text
                Description
                    no label
                    display as text
        paragraph
            visible when (IsPromotion)
                PriceListContractPromotion.ListName
                    label is "PriceList"
                    display as text
                PriceListContractPromotionForUIRel.Description
                    no label
                    display as text
        paragraph
            visible when (IsPromotion)
                PriceListContractPromotion.Promotion
                    label is "Promotion"
                    display as text
                Description
                    no label
                    display as text
