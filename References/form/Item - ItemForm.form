ItemForm is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is ItemContext
        background is theme color
    Actions
        action is CopyItem
            action icon is copy
            label is "Copy"
            mouse over text is "CopyItem"
        action is SyncItemInformation
            hide when invalid
        action is ChangeItemStatus
            hide when invalid
        navigation is ContractLinesWithMatchingManufInfo
            hide when invalid
        action is previous record
            label is "_"
            mouse over text is "PreviousRecord"
        action is next record
            label is "_"
            mouse over text is "NextRecord"
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    ClassesAndCodes is a Panel
        title is "Classes_andCodes"
        form is ItemClassesAndCodes
    Miscellaneous is a Panel
        form is Miscellaneous
    UserFields is a Panel
        form is UserFields
    UnitsOfMeasure is a Panel
        title is "Units_ofMeasure"
        list is ItemUOM set.UOMsForItem
    RecipeUnitsOfMeasure is a Panel
        visible when (IsKitchenItem)
        list is ItemRecipeUOM set.ItemRecipeUOMList
    AssociatedItems is a Panel
        list is AssociatedItemsRel.AssociatedItemListForItem
    Comments is a Panel
        list is ItemComment set.ItemComments
    Codes is a MultiListPanel
        list is NationalDrugCode set.NationalDrugCodes
            visible when (PharmacyOrDrugAndShowHealthcare)
        list is HIBCCItemUPN set.HIBCCItemUPNs
            visible when (NotPharmacyOrDrugAndShowHealthcare)
        list is UCCEANItemUPN set.UCCEANItemUPNs
            visible when (NotPharmacyOrDrugAndShowHealthcare)
        list is ItemUPC set.ItemUniversalProductCodes
        list is ItemSKU set.ItemSKUs
    GTINs is a Panel
        title is "GTI\\Ns"
        list is ItemGTIN set.GlobalTradeItemNumbers
    Attachments is a Panel
        list is ItemAttachment set.primary
    ConvertedContractSpecialItems is a Panel
        visible when (ContractSpecialItemExists)
        list is ContractSpecialItemsRel.OldSpecialItemsforItems
    LocationBalances is a Panel
        visible when (DisplayStockOnly)
        list is AllActiveInventoriedItemLocationsRel.ItemStockOnHandByLocation
    LocationBalancesWithCatchWeight is a Panel
        title is "LocationBalances"
        visible when (DisplayWithCatchWeight)
        list is AllActiveInventoriedItemLocationsRel.ItemStockOnHandByLocationWithCatchWeight
    LocationBalancesWithSupplemental is a Panel
        title is "LocationBalances"
        visible when (DisplayWithSupplemental)
        list is AllActiveInventoriedItemLocationsRel.ItemStockOnHandByLocationWithSupplemental
