ContractEvaluatorAndApproverForm is a Form
    is primary
    title is "ContractEvaluator,Approver,AndCreator"
    Layout
        two column
            ContractGroup
            paragraph
                ContractEvaluatorAndApprover
                    label is "Employee"
                ContractEvaluatorAndApprover.Employee.FirstLastName
                    no label
                    display as text
        two column
            Category
            Active
        header4 of "Evaluations"
        four column
            Evaluator
            Approver
                label is "Approver"
            visible when (Evaluator)
                paragraph
                    DefaultApprover
                        select is ApproverSelect
                    DefaultApprover.Employee.FirstLastName
                        no label
                        display as text
            visible when (Evaluator)
                DefaultEvaluatorDescription
                    label is "DefaultDescription"
        header4 of "ChangeOrders"
        three column
            CreatesChangeOrders
                label is "Creator"
            ChangeOrderApprover
                label is "Approver"
            visible when (CreatesChangeOrders)
                paragraph
                    DefaultChangeOrderApprover
                        label is "DefaultApprover"
                        select is ChangeOrderApproverSelect
                    DefaultChangeOrderApprover.Employee.FirstLastName
                        no label
                        display as text
        header4 of "Proposals"
        three column
            ProposalCreator
                label is "Creator"
            ProposalApprover
                label is "Approver"
            visible when (ProposalCreator)
                paragraph
                    DefaultProposalApprover
                        label is "DefaultApprover"
                        select is ProposalApproverSelect
                    DefaultProposalApprover.Employee.FirstLastName
                        no label
                        display as text
