CreateRelationForm is an ActionForm
    action is CreateRelation
        on completion navigate to ConfigConsoleNav
    title is "AddRelation"
    Layout
        single column
            BusinessClassParam
            paragraph
                NameParam
                TypeParam
                RelationToParam
            visible when (not TypeParam.BusinessSet)
                BusinessSetParam
                    select is BusinessSetRelList
        single column
            header2 of "Validity"
            paragraph
                ValidWhenParam
                    select is ConditionBusinessFieldList
                ValidWhenNegatedParam
        visible when (not TypeParam.BusinessSet)
            single column
                header2 of "Rules"
                DeleteRuleParam
                paragraph
                    AsOfParam
                    visible when (AsOfParam.AsOf)
                        AsOfDateParam
                    visible when (AsOfParam.Between)
                        BetweenStartDateParam
                        BetweenEndDateParam
