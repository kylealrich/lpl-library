MobileReceiptAdjustmentEntryContext is a Form
    title is "AdjustmentEntry"
    Layout
        single column
            visible when (not DocumentExists)
                PurchaseOrderReceipt
                    label is "Receiver"
                    select is POReceiverList
            visible when (DocumentExists)
                PurchaseOrderReceipt
                    label is "Receiver"
                    display as text
            POReceiptAdjustmentAndInspection
                label is "AdjustmentDocumentNumber"
                display as text
            Status
                display as text
