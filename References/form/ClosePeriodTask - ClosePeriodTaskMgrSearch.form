ClosePeriodTaskMgrSearch is a Form
    Layout
        five column distributed
            column1
                TaskName
                    label is "Task"
                ParentClosePeriodTask.TaskName
                    label is "Parent"
                TaskCompany
                    label is "Company"
                DueTimeSensitive
            column2
                FinanceTeam
                    label is "Team"
                TaskOwner
                    label is "Owner"
                ScheduleForTask.DueDate
                    label is "DueDate"
                IsOpen
                    label is "ShowOpenOnly"
            column3
                RequiresApproval
                RequireSupportingDoco
                    label is "RequiresSupportingDocumentation"
                RequireJournalEntry
                    label is "RequiresJournalEntryDetail"
                visible when (CloseManagementGroup.AllowOneTimeTasks)
                    OneTimeTask
            column4
                TaskStatus
                    label is "Status"
                Priority
                Risk
                paragraph
                    Overdue
                    DueToday
            column5
                visible when (CloseManagementGroup.HasTaskTypes)
                    PrimaryTaskType
                        label is "PrimaryType"
                        select is PrimaryCloseTaskTypeSelect
                visible when (CloseManagementGroup.HasTaskTypes)
                    SecondaryTaskType
                        label is "SecondaryType"
                        select is SecondaryCloseTaskTypeSelect
                visible when (CloseManagementGroup.HasTaskTypes)
                    TertiaryTaskType
                        label is "TertiaryType"
                        select is TertiaryCloseTaskTypeSelect
