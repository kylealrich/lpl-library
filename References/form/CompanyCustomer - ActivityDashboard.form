ActivityDashboard is a Form
    title is "<CompanyCustomerPrimaryFormTitle>_-Activity"
    disable all actions
    Layout
        display as text
            blank line
            three column distributed
                LastPaymentDate
                LastPaymentAmount
                visible when (ReviewCode.Reviewed)
                    ReviewDate
                visible when (ReviewCode.OpenToReview)
                    ReviewDate
            three column distributed
                LastInvoiceDate
                    label is "Invoice"
                LastInvoiceAmount
                visible when (ReviewCode.Reviewed)
                    NextReview
            three column distributed
                LastStatementDate
                    label is "Statement"
                LastStatementBalance
            three column distributed
                visible when (not DunningLetterIndicator)
                    LastDunningLetterDate
                        label is "Dunning"
                visible when (DunningLetterIndicator)
                    LastLetterDate
                LastDunningLetterAmount
                visible when (not DunningLetterIndicator)
                    LastDunningLetterNumber
                visible when (DunningLetterIndicator)
                    LastDunningLetter
                        label is "Level"
            three column distributed
                DisputedInvoiceAmount
                    label is "DisputeAmount"
                DisputedInvoices
                    label is "Disputes"
            blank line
        paragraph
            button of "Project"
                list is ReceivableInvoiceDetailRel.CustomerProjects
