SupplierContext is a Form
    Layout
        visible when (not actor.agent(SupplierSourceId).InactiveAtSomeLevel)
            visible when (PortalContact)
                display as text
                    single column
                        visible when (HasPicture)
                            Picture.File
                                display as portrait image up to 3 lines
                        MainContact.FirstAndLastName
                            no label
                            header3
                            color of blue
                        visible when (ContactTitle entered)
                            ContactTitle
                                label is "Title"
                        EmailAddress
                    paragraph
                        visible when (TelephoneNumber entered)
                            DerivedTelephoneNumber
                                label is "Phone"
                        visible when (MobilePhone entered)
                            DerivedMobileNumber
                                label is "Mobile"
                    single column
                        FullAddressDisplay
                            label is "MailingAddress"
                    paragraph
                        button of "Edit" with icon.edit
                            link is ProfileNav
                            is primary
                    header2 of "_"
                    single column
                        visible when (Supplier.HasPicture)
                            Supplier.Picture.File
                                display as portrait image up to 3 lines
                        Supplier.SupplierName
                            no label
                            header3
                            color of blue
                        visible when (Supplier.DoingBusinessAs entered)
                            Supplier.DoingBusinessAs
                    single column
                        Supplier.FullAddressDisplay
                            label is "MailingAddress"
                        visible when (Supplier.SameAsAddressAbove)
                            SameAddressTag
                                no label
                                display as tag
                                    color of blue
                        visible when (not Supplier.SameAsAddressAbove)
                            Supplier.FullRemitDisplay
                                label is "Remit_toAddress"
                    button of "<Supplier.WebAddress>"
                        link is "<Supplier.WebAddress>"
                        display as link
                    button of "Edit" with icon.edit
                        link is SupplierNav
                        is primary
