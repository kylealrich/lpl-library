AttributeUpdateContextConsolidatedItemMaster is a Form
    Layout
        visible when (not RecordExists)
            paragraph
                ContractGroup
                ContractGroup.BusinessGroup.Description
                    no label
                    display as text
            paragraph
                ConsolidatedItemMaster
                    select is AvailableConsolidatedItemMaster
                ConsolidatedItemMaster.Description
                    display as text
        visible when (RecordExists)
            display as text
                two column
                    paragraph
                        ContractGroup
                        ContractGroup.BusinessGroup.Description
                            no label
                            display as text
                    paragraph
                        ConsolidatedItemMaster
                        ConsolidatedItemMaster.Description
                three column
                    InternalItemNumber
                    paragraph
                        ManufacturerCode
                        ManufacturerDivision
                    ManufacturerPartNumberIdentifier
