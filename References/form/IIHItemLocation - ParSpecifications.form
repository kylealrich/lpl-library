ParSpecifications is a Form
    Layout
        two column distributed
            column1
                Item.MajorInventoryClassRel.Description
                    label is "MajorClass"
                    display as text
                Item.MinorInventoryClassRel.Description
                    label is "MinorClass"
                    display as text
                first ItemReplenishmentSourcesRel.ReplenishFrom.ReplenishFromCompany
                    label is "SourceCompany"
                    display as text
                first ItemReplenishmentSourcesRel.Vendor
                    label is "PrimaryVendorID"
                    display as text
                Item.Manufacturer.ManufacturerCode
                    label is "ManufacturerCode"
                    display as text
            column2
                Item.MajorInventoryClass
                    label is "MajorClassCode"
                    display as text
                Item.MinorInventoryClass
                    label is "MinorClassCode"
                    display as text
                first ItemReplenishmentSourcesRel.ReplenishFrom.ReplenishFromLocation
                    label is "SourceLocation"
                    display as text
                first ItemReplenishmentSourcesRel.Vendor.VendorName
                    display as text
