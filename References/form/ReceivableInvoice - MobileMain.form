MobileMain is a Form
    title is "Main"
    Layout
        two column
            Customer
                select is CustomerContextCompanyCustomerSelectList
            Customer.Name
                no label
                display as text
        single column
            visible when (IsUnreleased)
                ReceivableInvoiceType
                    label is "Type"
                display as text
            visible when (IsUnreleased)
                ReceivableInvoiceType
                    label is "Type"
            ReceivableInvoice
                label is "Transaction"
                display as text
            Description
        visible when (ParallelReferenceEnabled)
            paragraph
                ParallelReference
                    display as text
        two column
            TransientSignedTransactionAmount
                label is "Amount"
                display as text
            OriginalCurrency
                no label
                display as text
            visible when (Company.UseEWayBillNumber)
                EWayBillNumber
                    display as text
            visible when (IsCustomerOrder)
                CustomerOrderRel.VATRegistrationNumber
                    label is "VATRegistrationNumber"
            visible when (not IsCustomerOrder)
                visible when (VATRegistrationNumberEntered)
                    CompanyCustomerRel.VATRegistrationNumber
                        label is "VATRegistrationNumber"
        visible when (ReceivableInvoiceType.MixedSignLines)
            paragraph
                AlternateReceivableInvoiceType
                    label is "AlternateType"
                    display as text
        two column
            TransactionDate
                display as text
            GeneralLedgerDate
                label is "GlobalLedgerDate"
                display as text
        single column
            TransactionUserField1
                label is "UserSortField"
                display as text
        two column
            TermsCode
            TermsCode.Description.Desc[1]
                no label
                display as text
            TermsCode.Description.Desc[2]
                no label
                display as text
        two column
            column1
                CustomerPurchaseOrder
                    label is "PurchaseOrder"
                visible when (IsReleased)
                    button of "Intrastat"
                        sub form is IntrastatReleased
                        display as link
                visible when (IsUnreleased)
                    button of "Intrastat"
                        sub form is Intrastat
                        display as link
            column2
                CreditDebitMemoReason
                    label is "MemoReason"
                    select is ReceivableReasonCodeMemoList
                CreditDebitMemoReason.Description
                    no label
                    display as text
        two column
            ProjectContract.Project.DisplayProject
                label is "ProjectContract"
                display as text
            ProjectContract.Project.Description
                no label
                display as text
        two column
            column1
                InvoiceTypeCode
                    display as text
                    select is CustomerInvoiceTypeCodeList
                InvoiceTypeCode.Description
                    no label
                    display as text
            column2
                RegimeCode
                    display as text
        visible when (Company.VoucherReference)
            paragraph
                VoucherReferenceNumber
                    display as text
        header3 of "<DueDateLabel>"
        single column
            visible when (ShowFirstDueDate)
                FirstDueDate
            visible when (IsUnreleased)
                DueDate
            visible when (IsTermsFieldsOverridden)
                DueDate
                    display as text
            visible when (IsUnreleased)
                DiscountDate
            visible when (IsTermsFieldsOverridden)
                DiscountDate
                    display as text
            visible when (IsUnreleased)
                DiscountAmount
                    label is "Amount"
            visible when (IsTermsFieldsOverridden)
                DiscountAmount
                    label is "Amount"
                    display as text
            visible when (IsUnreleased)
                DiscountPercent
                    label is "Percent"
            visible when (IsTermsFieldsOverridden)
                DiscountPercent
                    label is "Percent"
                    display as text
