MobileBilling is a Form
    title is "Billing"
    Layout
        single column
            TransientBillingCustomerCode
                label is "CustomerCode"
            TransientPriceList
                label is "PriceList"
                compact format
            TransientTerritory
                label is "Territory"
            TransientCarrier
                label is "Carrier"
            TransientBillingFreightCode
                label is "BillingFreightCode"
            TransientBrokenCaseCharge
                label is "BrokenCaseCharge"
            TransientSalesman2
                label is "Salesman2"
            TransientCommissionSplitPercentage
                label is "CommissionSplit"
            TransientBillingLineItemRequired
                label is "InvoicingLineItems"
            visible when (CompanyCustomerExists)
                button of "ElectronicPayments"
                    link is MobileCustomerBillingDetailNav
        visible when (BillingCompanyRel.UseIDM)
            header3 of "DocumentDistributionOptions"
            four column
                column1
                    blank line
                    text of "Billing_\\Invoice"
                column2
                    paragraph
                        text of "Print"
                    paragraph
                        PrintBillingInvoice
                            no label
                column3
                    paragraph
                        text of "Email"
                    paragraph
                        EmailBillingInvoice
                            no label
                column4
                    text of "From_\\And_\\Reply_\\To_\\Email"
                    visible when (EmailBillingInvoice)
                        BillingInvoiceFromAndReplyToEmail
                            no label
                    visible when (not EmailBillingInvoice)
                        BillingInvoiceFromAndReplyToEmail
                            no label
                            display only
