CreditLimitStatus is a Form
    Layout
        two column distributed
            display as text
                column1
                    Customer.Name
                        label is "Name"
                    CompanyCustomer.Contact
                        label is "Contact"
                column2
                    CompanyCustomer.PhoneNumber
                        label is "Phone"
                    visible when (TelexNumberExists)
                        CompanyCustomer.TelexNbr
                            label is "TelexNumber"
        two column distributed
            display as text
                column1
                    CompanyCustomer.CreditLimit
                        label is "CreditLimit"
                    HoldCode
                    CompanyCustomer.CurrentBalance
                        label is "CurrentBalance"
                column2
                    OpenInvoiceAmountInCompanyCustomerCurrency
                        label is "CurrentInvoiceTotal"
                        raise blue alert when (CurrencyCheck)
                            mouse over text is "ConvertedToCompanyCustomerCurrency<CompanyCustomer.Currency>"
                    DerivedOtherInvoiceTotals
                        label is "OtherInvoicesTotal"
