ApplicationAdjustmentApprovalForm is a Form
    title is "ApplicationAdjustmentApprovalSettings"
    Layout
        header2 of "AdjustmentEmailSettings"
        header3 of "AdjustmentSubmittedForApproval"
        single column
            AdjustmentApprovalEmailSubject
                label is "EmailSubject"
            AdjustmentApprovalEmailContent
                label is "EmailContent"
                use text area of 10 lines
        two column
            AdjustmentApprovalIncludeLink
            AdjustmentApprovalIncludeRelatedDocs
        header3 of "AdjustmentApproved"
        single column
            AdjustmentApprovedEmailSubject
                label is "EmailSubject"
            AdjustmentApprovedEmailContent
                label is "EmailContent"
                use text area of 10 lines
            AdjustmentApprovedIncludeRelatedDocs
        header3 of "AdjustmentRejected"
        single column
            AdjustmentRejectEmailSubject
                label is "EmailSubject"
            AdjustmentRejectEmailContent
                label is "EmailContent"
                use text area of 10 lines
            AdjustmentRejectIncludeRelatedDocs
