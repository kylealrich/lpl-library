ProjectAssignmentEffortCommentForm is a Form
    is primary
    title is "ProjectAssignmentEffortComment"
    Layout
        two column
            column1
                Project
                    label is "<FinanceEnterpriseGroup.ProjectLabel>"
                    display as text
                Employee
                    display as text
                ProjectEffortPeriod
                    label is "EffortPeriod"
                    display as text
            column2
                Project.Description
                    no label
                    display as text
                Employee.Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
                paragraph
                    ProjectEffortPeriod.DateRange.Begin
                        no label
                        display as text
                    ProjectEffortPeriod.DateRange.End
                        no label
                        display as text
        single column
            Subject
            Comment
                use text area of 3 lines
            From
            visible when (HasComment)
                CommentDate
                    display as text
            DocumentURL
        paragraph
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
