CashTransactionCategory is a Form
    is primary
    title is "CashTransactionCategory"
    Layout
        visible when (HasParentCategory)
            paragraph
                ParentTransactionCategory
                    label is "ParentCategory"
                    display as text
                ParentTransactionCategory.Description
                    no label
                    display as text
        two column distributed
            column1
                CashTransactionCategory
                NaturalBalance
            column2
                Description
                Active
        blank line
        header2 of "AccountingInformation"
        single column
            StatementLinePostingOption
        visible when (StatementLinePostingOption.PostToReceivables)
            paragraph
                ReceivableCompany
                ReceivableProcessLevel
        visible when (not StatementLinePostingOption.NonPosting)
            paragraph
                OverrideEventCode
                OverrideEventCode.Description
                    no label
                    display as text
        visible when (StatementLinePostingOption.PostToCashLedger)
            paragraph
                PostingCompany
                PostingCashCode
                PostingCashCode.Description
                    no label
                    display as text
        paragraph
            CashAllocationCode
                select is ActiveCashAllocationCodes
            CashAllocationCode.Description
                no label
                display as text
        single column
            text of "Or"
        paragraph
            CategoryAccount
                compact format
        blank line
        header2 of "ReconciliationOptions"
        paragraph
            ReconciliationTolerancePercent
            text of "Or"
            ReconciliationToleranceAmount
        single column
            AlwaysReconcile
            RequireBankStatementLineDetail
