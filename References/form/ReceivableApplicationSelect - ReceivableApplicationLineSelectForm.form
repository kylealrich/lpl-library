ReceivableApplicationLineSelectForm is a Form
    title is "ReceivableApplicationSelection"
    Layout
        four column distributed
            column1
                ReceivableApplicationSelect.TransactionCompany.RepresentativeText
                    display as text
                Company.RepresentativeText
                    label is "PaymentCompany"
                    display as text
                TransactionApplicationAmount
                    label is "AppliedAmount"
                    display as text
            column2
                paragraph
                    ReceivableApplicationSelect.ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                        label is "Type"
                        display as text
                    ReceivableApplicationSelect.ReceivableInvoiceDetail.Invoice
                        label is "Invoice"
                        display as text
                    ReceivableApplicationSelect.ReceivableInvoiceDetail.PaymentSeq
                        label is "Sequence"
                        display as text
                display as text
                    ReceivablePaymentHeader
                        label is "PaymentBatch"
                    BaseApplicationAmount
            column3
                LineEnteredAmount
                display as text
                    ReceivablePayment.PaymentNumber
                    PaymentApplicationAmount
            column4
                GeneralLedgerDate
                    label is "GlobalLedgerDate"
                visible when (AllowSelectDistributionSet)
                    paragraph
                        TransientDistributionSetState
                            label is "DistributionStatus"
                            display as tag
                                color of red when (TransientDistributionSetState.OutOfBalance)
                                color of green when (TransientDistributionSetState.ReadyForProcessing)
                        DerivedDistributionSetSum
                            label is "SelectedSum"
                            display as text
                        DerivedDistributionSetDifference
                            label is "Difference"
                            display as text
                visible when (false)
                    TransientInvoiceDetailTypeForApplication
                    TransientInvoiceDetailSequenceForApplication
                    TransientReceivableCompanyForContext
                    TransientReceivableBatchForContext
                    TransientReceivableInvoiceForContext
                    TransientFundDistributionSetState
