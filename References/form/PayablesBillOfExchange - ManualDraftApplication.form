ManualDraftApplication is a Form
    Layout
        paragraph
            PayGroup
                select is PayGroups
            PayGroup.Name
                no label
                display as text
        paragraph
            BankTransactionCode
                label is "PaymentCode"
                select is BOEPayments
            BankTransactionCode.Description
                no label
                display as text
        paragraph
            Vendor
                label is "PaymentVendor"
                select is VendorName
            Vendor.VendorName
                no label
                display as text
        paragraph
            DraftNumber
                label is "Bill_ofExchangeNumber"
            Suffix
                no label
            button of "Filter"
                list is PayablesInvoicePaymentsRel.InvoiceApplicationFilters
            button of "Bill_ofExchangePayment"
                sub form is BillofExchangeEntry
        paragraph
        blank line
