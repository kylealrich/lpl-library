MobilePurchaseOrderLineContext is a Form
    title is "PurchaseOrderLineContext"
    Layout
        display as text
            visible when (PurchaseOrderLine entered)
                two column
                    column1 of 50%
                        Item
                    column2 of 50%
                        ItemType
                single column
                    Description
            two column
                column1 of 50%
                    DerivedStatus
                        label is "Status"
                        display as tag
                            color of yellow when (PurchaseOrderLineLifeCycleState.Unreleased)
                            color of green when (PurchaseOrderLineLifeCycleState.Released)
                            color of red when (PurchaseOrderLineLifeCycleState.Canceled)
                            color of gray when (PurchaseOrderLineLifeCycleState.Closed)
                            color of gray when (PurchaseOrderLineLifeCycleState.Historical)
                column2 of 50%
                    MobileTotalAmountDisplay
                        label is "Total"
