IntercompanyBillingRechargeItemAccrualForm is a Form
    is primary
    title is "RechargeItemAccrualCodeByCompany"
    Layout
        paragraph
            IntercompanyBillingRechargeItem
                label is "RechargeItem"
            IntercompanyBillingRechargeItem.Description
                no label
                display as text
        blank line
        two column distributed
            column1
                header2 of "Receivable"
                paragraph
                    IntercompanyBillingRechargeItemAccrual.ReceivableCompany
                        label is "Company"
                        select is ReceivableCompanySelectForIntercompanyBilling
                    IntercompanyBillingRechargeItemAccrual.ReceivableCompany.Name
                        no label
                        display as text
                paragraph
                    ReceivableGeneralLedgerCode
                        label is "AccrualCode"
                    ReceivableGeneralLedgerCode.Description
                        no label
                        display as text
                paragraph
                    ReceivableGeneralLedgerCode.DistributionAccount
                        label is "Account"
                        display as text
                        compact format
            column2
                header2 of "Payable"
                paragraph
                    IntercompanyBillingRechargeItemAccrual.PayablesCompany
                        label is "Company"
                        select is PayablesCompanySelectForIntercompanyBilling
                    IntercompanyBillingRechargeItemAccrual.PayablesCompany.Name
                        no label
                        display as text
                paragraph
                    PayablesAccrualCode
                        label is "AccrualCode"
                    PayablesAccrualCode.Description
                        no label
                        display as text
                paragraph
                    PayablesAccrualCodeDetailRel.DistributionAccount
                        label is "Account"
                        display as text
                        compact format
