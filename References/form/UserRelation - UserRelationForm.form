UserRelationForm is a Form
    is primary
    Layout
        paragraph
            BusinessClass
            RelationName
        paragraph
            BusSet.BusinessClass
                label is "RelatesTo"
            BusSet.BusinessSet
                label is "Set"
                select is BusinessSetRelList
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserRelation
                label is "UserRelationId"
            Description
        single column
            LPL
                use text area of 15 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
