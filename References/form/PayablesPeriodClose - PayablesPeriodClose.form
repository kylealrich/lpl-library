PayablesPeriodClose is an ActionForm
    action is PayablesPeriodClose
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            Company.AccountingEntity.FiscalYear
                display as text
            Company.AccountingEntity.CurrentPeriod.PeriodName
                display as text
        single column
            CompanyGroup
        blank line
        single column
            UpdateUnreleased
                label is "UpdateUnreleasedInvoices"
        single column
            UpdateUnapproved
                label is "UpdateMatchInvoicesNotReadyToJournalize"
        single column
            NewPostDate
                label is "NewPostingDate"
        blank line
        single column
            UpdateOption
                label is "Update"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PayablesPeriodCloseReport_RDG
                PayablesPeriodCloseErrorReport_RDG
            column2 of 25%
                PayablesPeriodCloseReport_XPT
                PayablesPeriodCloseErrorReport_XPT
