PriceListSalesClass is a Form
    is primary
    title is "PriceListSalesClass"
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            visible when (PriceListContractPromotion not entered)
                PriceListContractPromotion
                    label is "PriceList"
                    compact format
        paragraph
            visible when (PriceListContractPromotion entered)
                visible when (IsPriceList)
                    paragraph
                        PriceListContractPromotion.ListName
                            label is "PriceList"
                            display as text
                        PriceListContractPromotion.Description
                            no label
                            display as text
                visible when (IsContract)
                    paragraph
                        PriceListContractPromotion.Customer
                            label is "Customer"
                            display as text
                        PriceListContractPromotion.ListName
                            label is "Contract"
                            display as text
                        PriceListContractPromotion.Description
                            no label
                            display as text
                visible when (IsPromotion)
                    paragraph
                        PriceListContractPromotion.ListName
                            label is "PriceList"
                            display as text
                        PriceListContractPromotion.Promotion
                            label is "Promotion"
                            display as text
                        PriceListContractPromotion.Description
                            no label
                            display as text
        paragraph
            PriceListSalesClass.MajorSalesClass
                show up to 10 characters
            PriceListSalesClass.MinorSalesClass
                show up to 10 characters
        paragraph
            SalesProhibited
                label is "ProhibitSales"
            NoCharge
            AmalgamatedPricing
        paragraph
            PriceDiscountCode
                label is "DiscountCode"
                select is DiscountCodes
            PriceDiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup.InvoiceDescription
                no label
                display as text
        two column table
            column headers
                "BreakQuantity"
                "BreakPercent"
            column1
                QuantityBreak.QuantityPercentGroup[1].BreakQuantity
                    no label
                QuantityBreak.QuantityPercentGroup[2].BreakQuantity
                    no label
                QuantityBreak.QuantityPercentGroup[3].BreakQuantity
                    no label
                QuantityBreak.QuantityPercentGroup[4].BreakQuantity
                    no label
                QuantityBreak.QuantityPercentGroup[5].BreakQuantity
                    no label
                QuantityBreak.QuantityPercentGroup[6].BreakQuantity
                    no label
            column2
                QuantityBreak.QuantityPercentGroup[1].BreakPercent
                    no label
                QuantityBreak.QuantityPercentGroup[2].BreakPercent
                    no label
                QuantityBreak.QuantityPercentGroup[3].BreakPercent
                    no label
                QuantityBreak.QuantityPercentGroup[4].BreakPercent
                    no label
                QuantityBreak.QuantityPercentGroup[5].BreakPercent
                    no label
                QuantityBreak.QuantityPercentGroup[6].BreakPercent
                    no label
