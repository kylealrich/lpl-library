MobileAllocationRun is a Form
    title is "AllocationRun"
    restrict action Delete
    restrict action GenerateCost
    restrict action GenerateCostBehaviorSummary
    restrict action FinalizeCompleted
    restrict action DeleteRunCompleted
    restrict action DeleteRunStarted
    restrict action DeleteRunFailed
    restrict action Reconcile
    restrict action PublishForBirstReport
    restrict action UnpublishForBirstReport
    restrict action UnfinalizeFinalized
    restrict action JournalizeFinalized
    restrict action CancelJournalized
    restrict action GenerateCost
    restrict action Cancel
    restrict action DeleteRun
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is refresh
            label is "_"
    Layout
        text of "<TrueCostAllocationRun.RunName>"
            header1
            center
        text of "<TrueCostAllocationRun>"
            header3
            center
        single column
            paragraph
                blank line
                text of "_"
            paragraph
                TrueCostAllocationRun.AllocationRun.Status
                    display as text
            paragraph
                TrueCostAllocationRun.AllocationRun.PostingDate
                    display as text
            paragraph
                TrueCostAllocationRun.AllocationRun.UseCapacityLedger
                    label is "IsCapacity"
                    display as text
            paragraph
                TrueCostAllocationRun.AllocationRun.Allocation
                    display as text
            paragraph
                TrueCostAllocationRun.AllocationRun.AllocationGroup
                    display as text
            paragraph
                TrueCostAllocationRun.AllocationRun.FromStep
                    display as text
            paragraph
                TrueCostAllocationRun.AllocationRun.ToStep
                    display as text
            paragraph
                create stamp
                    label is "RunDate/Time"
                    display as text
