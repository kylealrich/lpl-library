RecurringJournalForm is a Form
    title is "RecurringJournalInterface"
    Layout
        blank line
        header2 of "SourceStructure"
        paragraph
            FinanceCodeBlock
                no label
                display only
                compact format
        blank line
        blank line
        header2 of "RecurringJournalControl"
        paragraph
            RecurringOption
                label is "SelectARecurringOption"
        blank line
        blank line
        visible when (not RecurringJournalExists)
            paragraph
                RecurringJournalType
                    label is "Recurring"
                RecurringDescription
                    label is "Description"
                RecurringGeneralLedgerEvent
                    label is "RecurringGlobalLedgerEvent"
                RecurringReference
                    label is "Reference"
            paragraph
                RecurringBeginningYear
                    label is "BeginningYearPeriod"
                    display only
                RecurringBeginningPeriod
                    no label
                    compact format
                RecurringEndYear
                    label is "EndYearPeriod"
                    display only
                RecurringEndPeriod
                    no label
                    compact format
                RecurringPostingDay
                    label is "PostingDay"
                RecurringTransactionDay
                    label is "TransactionDay"
        visible when (RecurringJournalExists)
            paragraph
                RecurringJournalType
                    label is "Recurring"
                    display only
                RecurringJournalControl
                    no label
                    display only
                RecurringDescription
                    label is "Description"
                    display only
                RecurringReference
                    label is "Reference"
                    display only
            paragraph
                RecurringBeginningYear
                    label is "BeginningYearPeriod"
                    display only
                RecurringBeginningPeriod
                    no label
                    display only
                RecurringEndYear
                    label is "EndYearPeriod"
                    display only
                RecurringEndPeriod
                    no label
                    display only
                RecurringPostingDay
                    label is "PostingDay"
                    display only
                RecurringTransactionDay
                    label is "TransactionDay"
                    display only
        blank line
        blank line
        header2 of "RecurringJournalTransaction"
        paragraph
            RecurringToCodeBlock
                label is "ToFinanceStructure"
                compact format
            blank line
            paragraph
                RecurringTransactionAmount
                RecurringUnitsAmount
        blank line
        blank line
        header2 of "Totals"
        paragraph
            TransactionAmount
                label is "TransactionAmount"
                display only
            TotalJournalBridgeAmount
                label is "TotalOfCreatedRecurringTransactionLines"
            BalanceBridgeAmount
                label is "RemainingTransactionAmount"
