ReceivableCustomerForm is a Form
    title is "ReceivableCustomer"
    Layout
        visible when (InEnterpriseStructure)
            two column distributed
                column1
                    paragraph
                        CompanyCustomerGroup.ReceivableCompany
                            label is "ReceivableCompany"
                        CompanyCustomerGroup.ReceivableCompany.Name
                            no label
                            display as text
                column2
                    ARInterfaceOption
            two column distributed
                column1
                    paragraph
                        CompanyCustomerGroup.Customer
                            label is "ReceivableCustomer"
                            select is CustomerContextCompanySelect
                        CompanyCustomerGroup.Customer.SearchName
                            no label
                            display as text
                        button of "ViewCustomer"
                            link is CompanyCustomerLink
                            display as link
                column2
                    paragraph
                        CompanyCustomerGroup.CustomerBillTo
                            label is "BillTo"
                        CompanyCustomerGroup.CustomerBillTo.Name
                            no label
                            display as text
            two column distributed
                column1
                    paragraph
                        CompanyCustomerGroup.ReceivableProcessLevel
                            label is "ReceivableProcessLevel"
                        CompanyCustomerGroup.ReceivableProcessLevel.Name
                            no label
                            display as text
                column2
                    visible when (not CompanyCustomerGroup.ReceivableCompany.DetailedInvoiceAccrualDistributions)
                        paragraph
                            CompanyCustomerGroup.ReceivableGeneralLedgerCode
                                label is "AccountsReceivableCode"
                                select is ARCodes
                            CompanyCustomerGroup.ReceivableGeneralLedgerCode.Description
                                no label
                                display as text
            visible when (CompanyCustomerGroup.ReceivableCompany.DetailedInvoiceAccrualDistributions)
                single column
                    InvoiceFinanceCodeBlock
                        compact format
            two column distributed
                column1
                    paragraph
                        CompanyCustomerGroup.InvoiceTypeCode
                            label is "InvoiceTypeCode"
                            select is CustomerInvoiceTypeCodeList
                        CompanyCustomerGroup.InvoiceTypeCode.Description
                            no label
                            display as text
            two column distributed
                column1
                    paragraph
                        ProjectJurisdictionCode
                            show up to 10 characters
                        ProjectJurisdictionCode.Description
                            no label
                            display as text
                column2
                    DocumentNumber
            two column distributed
                column1
                    CustomerPoNumber
                        label is "CustomerP\\ONumber"
                column2
                    LetterOfCredit
        visible when (not InEnterpriseStructure)
            three column distributed
                column1
                    CompanyCustomerGroup.ReceivableCompany
                        label is "ReceivableCompany"
                        display as text
                column2
                    CompanyCustomerGroup.ReceivableCompany.Name
                        no label
                        display as text
                column3
                    ARInterfaceOption
                        display as text
            three column distributed
                column1
                    CompanyCustomerGroup.Customer
                        label is "ReceivableCustomer"
                        display as text
                column2
                    CompanyCustomerGroup.Customer.SearchName
                        no label
                        display as text
            three column distributed
                column1
                    CompanyCustomerGroup.CustomerBillTo
                        label is "BillTo"
                        display as text
                column2
                    CompanyCustomerGroup.CustomerBillTo.Name
                        no label
                        display as text
            three column distributed
                column1
                    CompanyCustomerGroup.ReceivableProcessLevel
                        label is "ReceivableProcessLevel"
                        display as text
                column2
                    CompanyCustomerGroup.ReceivableProcessLevel.Name
                        no label
                        display as text
            visible when (not CompanyCustomerGroup.ReceivableCompany.DetailedInvoiceAccrualDistributions)
                three column distributed
                    column1
                        CompanyCustomerGroup.ReceivableGeneralLedgerCode
                            label is "AccountsReceivableCode"
                            display as text
                    column2
                        CompanyCustomerGroup.ReceivableGeneralLedgerCode.Description
                            no label
                            display as text
            visible when (CompanyCustomerGroup.ReceivableCompany.DetailedInvoiceAccrualDistributions)
                single column
                    InvoiceFinanceCodeBlock
                        display as text
                        compact format
            three column distributed
                column1
                    CompanyCustomerGroup.InvoiceTypeCode
                        label is "InvoiceTypeCode"
                        display as text
                column2
                    CompanyCustomerGroup.InvoiceTypeCode.Description
                        no label
                        display as text
            three column
                column1
                    ProjectJurisdictionCode
                        display as text
                column2
                    ProjectJurisdictionCode.Description
                        no label
                        display as text
            three column distributed
                column1
                    CustomerPoNumber
                        label is "CustomerP\\ONumber"
                        display as text
                column2
                    LetterOfCredit
                        display as text
                column3
                    DocumentNumber
                        display as text
