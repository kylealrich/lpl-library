LockboxForm is a Form
    is primary
    title is "<ReceivableLockBoxTitle>"
    Layout
        two column distributed
            column1
                visible when (not ReceivableLockBoxExists)
                    paragraph
                        ReceivableLockBox
                visible when (ReceivableLockBoxExists)
                    paragraph
                        ReceivableLockBox
                            display as text
                paragraph
                    Name
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
                paragraph
                    ReceivableProcessLevel
                        label is "ProcessLevel"
                        select is ProcessLevels
                    ReceivableProcessLevel.Name
                        no label
                        display as text
                paragraph
                    CashCode
                        select is CashCodeForCompanyList
                    CashCode.Description
                        no label
                        display as text
                paragraph
                    Currency
                    Currency.Description
                        no label
                        display as text
            column2
                PostalAddress
                    form is PostalAddressShortNotRequired
