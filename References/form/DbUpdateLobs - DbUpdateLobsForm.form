DbUpdateLobsForm is a Form
    is primary
    title is "UpdateLargeObjects"
    Layout
        WorkDirectory
        header3 of "DetermineAction"
        single column
            ActionChoice
                display as horizontal radio buttons
        header3 of "Select_aBusinessClass"
        single column
            BusinessClass
                select is BusinessViewNonUserDBList
            visible when (ActionChoice.CreatingInputFile)
                FieldString
                FilterString
        visible when (not ActionChoice.CreatingInputFile)
            header3 of "SourceFile"
            single column
                FileName
        visible when (ActionChoice.CreatingInputFile)
            header3 of "TargetFile"
            single column
                FileName
                    label is "FilenameToCreate"
        visible when (not ActionChoice.CreatingInputFile)
            header3 of "ImportOptions"
            single column
                ValidateOnly
        DelimitersAndPatterns
