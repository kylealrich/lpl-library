ReceivablePaymentContextForm is a Form
    title is "ReceivablePayment"
    Layout
        display as text
            five column distributed
                column1
                    paragraph
                        Company.RepresentativeText
                        Company.Currency
                            label is "_"
                    visible when (TypeOfPayment.CustomerPayment)
                        Customer.RepresentativeText
                    visible when (TypeOfPayment.NonArPayment)
                        text of "Non_AR_Payment"
                            bold
                column2
                    paragraph
                        button of "<ReceivablePaymentHeader>"
                            link is BatchNav
                            label is "Batch"
                            display as link
                        TypeOfPayment
                            label is "Type"
                    paragraph
                        PaymentNumber
                        TransientDerivedStatus2
                            label is "Status"
                column3
                    paragraph
                        TransactionAmount
                            label is "PaymentAmount"
                                header4
                                bold
                            header4
                            bold
                        visible when (TypeOfPayment.NonArPayment)
                            OriginalCurrency
                                label is "_"
                        visible when (TypeOfPayment.CustomerPayment)
                            visible when (TransientPaymentOpen entered)
                                TransientPaymentOpen
                                    label is "Open"
                                        header4
                                        bold
                                        color of red
                                    header4
                                    color of red
                                visible when (IsNotCompanyCurrency)
                                    OriginalCurrency
                                        label is "_"
                                        header4
                                        color of red
                            visible when (TransientPaymentOpen not entered)
                                TransientPaymentOpen
                                    label is "Open"
                                        header4
                                        bold
                                        color of green
                                    header4
                                    color of green
                                visible when (IsNotCompanyCurrency)
                                    OriginalCurrency
                                        label is "_"
                                        header4
                                        color of green
                    paragraph
                        DepositDate
                        GeneralLedgerDate
                column4
                    ReceivablePaymentHeader.Status
                        label is "BatchStatus"
                        display as tag
                            color of gray when (ReceivablePaymentHeader.Status.OpenBatchUnreleased)
                            color of green when (not ReceivablePaymentHeader.Status.OpenBatchUnreleased)
                    ReceivableProcessLevel.RepresentativeText
                        label is "ProcessLevel"
                column5
                    button of "View"
                        visible when (HasIDMDocument)
                        link is external "<DerivedIDMDocumentLink>"
                        label is "Document"
                        display as link
                    button of "OpenInforDocumentManagement"
                        visible when (HasInterfacePayment2IDMUniqueID)
                        link is external "<DerivedPaymentImport2IDMDocumentLink>"
                            lazy url retrieval
                        label is "InterfaceDocument"
                        display as link
            five column distributed
                visible when (DerivedMessage entered)
                    paragraph
                        text of "Note:"
                            header4
                            bold
                            color of red
                        DerivedMessage
                            label is "_"
                            header4
                            bold
                            color of red
                visible when (Company.DetailedCashDistributions)
                    CashDetailState
                        label is "CashDetails"
                        display as tag
                            color of gray when (CashDetailState.None)
                            color of yellow when (CashDetailState.Unreleased)
                            color of red when (CashDetailState.Amended)
                            color of green when (CashDetailState.Released)
