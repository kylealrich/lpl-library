LRCDetail is a Form
    Layout
        visible when (not RecordExists)
            single column
                Employee
                    label is "ID"
        header3 of "CurrentName"
        three column distributed
            Name.GivenName
                label is "Given_(First)"
            Name.MiddleName
                label is "Middle"
            Name.FamilyName
                label is "Family_(Last)"
        header3 of "PreferredName"
        three column distributed
            Name.PreferredGivenName
                label is "Given_(First)"
            Name.PreferredFamilyName
                label is "Family_(Last)"
        header3 of "NameDesignation"
        three column distributed
            Name.FormOfAddress
                label is "Title"
            Name.Affix
                label is "Suffix"
            Name.Qualification
                label is "ProfessionalDesignation"
