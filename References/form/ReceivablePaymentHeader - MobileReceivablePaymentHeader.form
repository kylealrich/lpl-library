MobileReceivablePaymentHeader is a CompositeForm
    title is "ReceivablePaymentHeader"
    context form is MobileReceivablePaymentHeaderContextForm
        background is theme color
    show panel control on left
    Main is a Panel
        form is MobileMain
    Options is a Panel
        form is Options
    CustomerPayments is a Panel
        list is CustomerPaymentsRel.MobileCustomerReceivablePaymentsList
    NonARCashPayments is a Panel
        list is CashNonArPaymentsRel.MobileNonCashARReceivablePaymentsList
    PaymentBatchDistributions is a Panel
        visible when (IsReleased)
        list is PaymentBatchDistributionsRel.ReceivableDistributionListDisplayOnly
    CashLedgerTransactions is a Panel
        visible when (Status.ReleasedBatch)
        list is CashLedgerTransactionRel.MobileAllCashLedgerTransactionsList
    Attachments is a Panel
        list is ReceivablePaymentHeaderAttachment set.MobileAttachments
