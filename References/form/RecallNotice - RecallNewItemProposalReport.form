RecallNewItemProposalReport is a SummaryForm
    title is "NewItemProposalInformation"
    Layout
        header2 of "Proposal#<RecallNotice>"
            show border color of black
            shade
            center
        header2 of "_"
        single column
            Name
            Description
                use text area of 4 lines
            RecallType
                label is "NewItemProposalType"
        two column
            RecallReceivedDate
        single column
            RecallSource
        two column
            RecallCoordinator.RecallUserName
                label is "Coordinator"
            button of "<RecallCoordinator.EmployeeWorkEmailAddress>"
                link is "mailto:<RecallCoordinator.EmployeeWorkEmailAddress>"
                display as link
        paragraph
            RecallCoordinator.Employee.EmployeeWorkTelephone
                label is "CoordinatorPhone"
        single column
            Supplier.SupplierName
        visible when (ReportedBySupplierEntered)
            two column
                ReportedBySupplier.SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContactName"
                button of "<ReportedBySupplier.SupplierSourceId.EmailAddress>"
                    link is "mailto:<ReportedBySupplier.SupplierSourceId.EmailAddress>"
                    display as link
        visible when (ReportedByRecallUserEntered)
            single column
                ReportedByRecallUser.FirstLastName
                    label is "ReportedBy"
                    display as text
        form is RecallProduct set.RecallNewItemProposalSummary
