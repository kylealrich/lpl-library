BOEApplicationContextForm is a Form
    Layout
        three column distributed
            column1
                paragraph
                    PayGroup
                        select is PayGroups
                    PayGroup.Name
                        no label
                        display as text
                paragraph
                    Vendor
                        label is "PaymentVendor"
                        select is VendorName
                    Vendor.VendorName
                        no label
                        display as text
            column2
                paragraph
                    BankTransactionCode
                        label is "PaymentCode"
                        select is BOEPayments
                    BankTransactionCode.Description
                        no label
                        display as text
                Status
            column3
                paragraph
                    DraftNumber
                        label is "BillOfExchangeNumber"
                    Suffix
                paragraph
                    RemitToCode
                        label is "RemitToLocation"
                        select is RemitToLocations
                    RemitToCode.VendorName
                        no label
                        display as text
