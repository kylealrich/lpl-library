WarehouseWorkOrderExplosion is an ActionForm
    action is WarehouseWorkOrderExplosion
    Layout
        two column distributed
            paragraph
                WorCompany
                    label is "Company"
                WorCompany.Name
                    no label
                    display as text
            paragraph
                WorLocation
                    label is "Location"
                    select is ProductionLocations
                    show up to 8 characters
                WorLocation.Name
                    no label
                    display as text
        two column distributed
            paragraph
                ReportOption
                    label is "SelectAllWorkOrders"
                AllocDetail
                    label is "AllocateDetails"
            paragraph
                PrintDetail
                    label is "PrintDetails"
        two column distributed
            IclAllocPurp
                label is "BinAllocationPurpose"
            PreferOption
                label is "ForcePreferredBin"
        two column distributed
            FromWorkOrder
                label is "FromWorkOrder"
            ToWorkOrder
                label is "ToWorkOrder"
        blank line
        single column
            FormSelection
                no label
                display as horizontal radio buttons
        visible when (FormSelection.ByDate)
            two column distributed
                FromCreateDate
                    label is "FromWorkOrderDate"
                ToCreateDate
                    label is "ToWorkOrderDate"
        visible when (FormSelection.ByNumberOfDays)
            single column
                paragraph
                    FromAddSubtract
                        label is "FromNumberOfDays"
                    FromDays
                        label is "Days"
            single column
                paragraph
                    ToAddSubtract
                        label is "ToNumberOfDays"
                    ToDays
                        label is "Days"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                WarehouseWorkOrderExplosionReport_RDG
            column2 of 25%
                WarehouseWorkOrderExplosionReport_XPT
