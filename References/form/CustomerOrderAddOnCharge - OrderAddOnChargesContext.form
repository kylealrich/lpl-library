OrderAddOnChargesContext is a Form
    Layout
        visible when (RecordExists)
            three column distributed
                display as text
                    column1
                        CustomerOrder.Company.RepresentativeText
                            label is "Company"
                        CustomerOrder.InventoryLocation.RepresentativeText
                            label is "InventoryLocation"
                    column2
                        CustomerOrder
                            label is "CustomerOrder"
                        visible when (IsCustomerOrderLine)
                            CustomerOrderLine
                                label is "Line"
                    column3
                        CustomerOrder.Status
                            display as tag
                                color of yellow when (CustomerOrder.Status.Unreleased)
                                color of green when (CustomerOrder.Status.Released)
                                color of red when (CustomerOrder.Status.Canceled)
                                color of gray when (CustomerOrder.Status.ReadyForPurge)
                        visible when (IsCustomerOrderLine)
                            CustomerOrderLine.LineType
            visible when (IsCustomerOrderLine)
                three column distributed
                    display as text
                        column1
                            CustomerOrderLine.Item
                        column2
                            CustomerOrderLine.ItemDescription
                        column3
                            paragraph
                                CustomerOrderLine.OrderQuantity
                                CustomerOrderLine.SellUOM
