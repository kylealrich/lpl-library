LineOptions is a Form
    Layout
        header2 of "SalesData"
        three column distributed
            column1
                paragraph
                    Territory
                    Territory.Description
                        no label
                        display as text
                paragraph
                    CommissionSplitPercentage
                        label is "Split"
            column2
                paragraph
                    SalesRepresentative
                        label is "SalesRepresentative1"
                    SalesRepresentative.Name
                        no label
                        display as text
                paragraph
                    CommissionRate1
                        label is "Commission"
            column3
                paragraph
                    SalesRepresentative2
                        label is "SalesRepresentative2"
                    SalesRepresentative2.Name
                        no label
                        display as text
                paragraph
                    CommissionRate2
                        label is "Commission"
        header2 of "Accounts"
        visible when (not AllowMultipleSalesAccountEntry)
            paragraph
                SalesAccount
                    compact format
        visible when (AllowMultipleSalesAccountEntry)
            paragraph
                BlankField
                    label is "SalesAccount"
                    display as text
                button of "MultipleSalesAccountEntry"
                    link is SalesAccountEntry
                    display as link
        paragraph
            COGSAccount
                label is "CostOfGoodsAccount"
                compact format
        paragraph
            OffsetAccount
                compact format
        header2 of "Discounts"
        three column distributed
            paragraph
                NoCharge
                    label is "NoCharge"
                        left of field
                OrderDiscount
                    label is "Discountable"
                        left of field
            paragraph
                EnteredDiscount
                    label is "AddOnDiscount"
            paragraph
                PriceDiscountCode
                    label is "DiscountCode"
                    display as text
        header2 of "Tax"
        three column distributed
            column1
                TaxExemptCode
                    label is "TaxExempt"
            column2
                paragraph
                    TaxCode
                    TaxCode.Description
                        no label
                        display as text
            column3
                UNSPSCCode
                    compact format
        three column distributed
            column1
                ProductTaxCategory
                visible when (HasPointOfTitleTransfer)
                    PointOfTitleTransfer
                        display as text
            column2
                visible when (IsHSNSACCodeEnabled)
                    paragraph
                        HSNSACCode
                        HSNSACCode.Description
                            no label
                            display as text
                visible when (TaxOutputDueAccount)
                    EntityTaxCodeRel.TaxOutputDueAccount
                        label is "TaxAccount"
                        display only
                        compact format
                visible when (TaxOutputAccount)
                    EntityTaxCodeRel.TaxOutputAccount
                        label is "TaxAccount"
                        display only
                        compact format
        header2 of "Shipment"
        paragraph
            ShipTerm
        header2 of "ReasonCode"
        paragraph
            ReasonCode
            ReasonCode.Description
                no label
                display as text
        header2 of "AdditionalInformation"
        paragraph
            PropertyID
