ProcessIndicatorFormForReceivables is a Form
    title is "ProcessIndicator"
    Layout
        single column
            visible when (PfiWorkunitForReceivablesRel.HasProcessIndicator)
                first PfiWorkunitForReceivablesRel.PfiProcessIndicatorRel.Model
                    no label
                    display as text
        paragraph
            last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.ActionTaken
                label is "LastAction"
                display as tag
                    color of blue when (last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.ActionTaken.Submitted)
                    color of red when (last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.ActionTaken.Rejected)
                    color of green when (last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.ActionTaken.Approved)
                    color of blue when (last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.ActionTaken.ReopenedForEdit)
            visible when (last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.Comment entered)
                last IntercompanyBillingDocumentApprovalHistoryForReceivableRel.Comment
                    show up to 30 characters
