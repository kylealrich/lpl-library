MassLeasePaymentApproval is an ActionForm
    action is MassLeasePaymentApproval
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
            visible when (LeaseCompanyGroup.Lease)
                paragraph
                    Company
                        select is PayablesCompanyList
                    Company.Name
                        no label
                        display as text
                paragraph
                    Lease
                        select is AllLeases
                    Lease.Description
                        no label
                        display as text
            visible when (LeaseCompanyGroup.CompanyGroup)
                paragraph
                    CompanyGroup
                        label is "CompanyGroup"
                        select is CompanyGroupsInFinanceEnterpriseGroup
                    CompanyGroup.Description
                        no label
                        display as text
        paragraph
            LeaseClass
                label is "LeaseClassification"
            LeaseType
            LeaseType.Description
                no label
                display as text
        paragraph
            AuthCode
                label is "AuthorityCode"
                select is AuthorityCodeswithinaCompany
            AuthCode.Description
                no label
                display as text
        single column
            SortOption
                label is "Sort"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                MassLeasePaymentApprovalReport_RDG
            column2 of 25%
                MassLeasePaymentApprovalReport_XPT
