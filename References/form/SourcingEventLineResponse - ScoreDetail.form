ScoreDetail is a Form
    title is "LineScoreDetails"
    Layout
        three column
            column1
                SourcingEvent.EventVersionString
                    label is "Event#"
                    display as text
                NotifiedSupplier.Supplier
                    label is "Supplier"
                    display as text
                NotifiedSupplier.SupplierSourceId
                    label is "SupplierContact"
                    display as text
            column2
                SourcingEvent.Name
                    label is "EventName"
                    display as text
                NotifiedSupplier.Supplier.SupplierName
                    label is "SupplierName"
                    display as text
                NotifiedSupplier.SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContactName"
                    display as text
            column3
                SourcingEventLine
                    label is "Line"
                    display as text
                blank line
                blank line
        header2 of "LineScoreDetails"
        paragraph
            LinePriceScore
                label is "PriceScore"
            text of "_out_of"
            LinePriceWeighting
                no label
        paragraph
            LineDeliveryScore
                label is "DeliveryScore"
            text of "_out_of"
            LineDeliveryWeighting
                no label
        paragraph
            LineDiversityScore
                label is "DiversityScore"
            text of "_out_of"
            LineDiversityWeighting
                no label
        paragraph
            LineTotalQuestionScore
                label is "TotalQuestionScore"
            text of "_out_of"
            LineTotalQuestionWeighting
                no label
        blank line
        paragraph
            LineTotalLineScore
                label is "TotalLineScore"
            text of "_out_of"
            LineTotalLineWeighting
                no label
