AddIngredient is an ActionForm
    action is AddIngredient
    Layout
        paragraph
            Sequence
                label is "Sequence"
            IngredientType
                label is "Type"
        single column
            IngredientItem
                label is "IngredientItem"
                select is IngredientItems
            IngredientItem.Description
                label is "Description"
                display as text
        two column distributed
            column1
                InventoryCost
                    label is "UnitCost"
                QuantityInRecipeUOM
                    label is "RecipeQuantity"
            column2
                IngredientItem.StockUOM
                    label is "UOM"
                RecipeUnitOfMeasure
                    label is "UOM"
                    select is ValidItemRecipeUOM
