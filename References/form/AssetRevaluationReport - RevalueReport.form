RevalueReport is an ActionForm
    action is AssetRevaluationReport
    title is "AssetRevaluationReport"
    Layout
        header2 of "SelectionOptions"
        paragraph
            FromDate
                label is "FromRevalueDate"
            ToDate
                label is "ToRevalueDate"
        paragraph
            Book
            Book.Description
                no label
                display as text
        paragraph
            Company
                select is Companies
            Company.CompanyName
                no label
                display as text
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division.Description
                no label
                display as text
        paragraph
            AssetType
                label is "Type"
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        header2 of "OutputOptions"
        single column
            header3 of "PrintTotals"
        two column
            column1
                header4 of "Sequence"
                blank line
                paragraph
                    LocOption
                        label is "Location"
                paragraph
                    DivOption
                        label is "Division"
                paragraph
                    TypeOption
                        label is "Type"
                blank line
                blank line
            column2
                header4 of "Miscellaneous"
                blank line
                blank line
                blank line
                blank line
                blank line
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AssetRevaluationReportReport_RDG
            column2 of 25%
                AssetRevaluationReportReport_XPT
