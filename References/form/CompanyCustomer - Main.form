Main is a Form
    Layout
        header2 of "Defaults"
        three column distributed
            column1
                paragraph
                    SearchName
                paragraph
                    ReceivableHoldCode
                        label is "ReceivableHoldCode"
                        select is HoldCodeLists
                    ReceivableHoldCode.Description
                        no label
                        display as text
                paragraph
                    CustomerMajorClass
                        label is "MajorClass"
                        select is MajorClass
                    CustomerMajorClass.Description
                        no label
                        display as text
                paragraph
                    CustomerMinorClass
                        label is "MinorClass"
                        select is MinorClass
                    CustomerMinorClass.Description
                        no label
                        display as text
                paragraph
                    CarrierFlag
                    Affiliate
                    visible when (Affiliate)
                        visible when (Company.ClaimsAndLiabilitiesReporting)
                            AffiliateOwnership
            column2
                paragraph
                    Currency
                    Currency.Description
                        no label
                        display as text
                RevalueCurrencyTransactions
                    label is "CurrencyRevaluation"
                CreditLimitDate
                CreditLimit
                CreditReviewDays
            column3
                paragraph
                    LanguageCode
                        label is "Locale"
                        compact format
                    LanguageCode.LocaleName
                        no label
                        display as text
                RiskIndicator
                    label is "RiskCode"
                NationalAccountIndicator
                    label is "NationalAccountType"
                    display as text
                paragraph
                    visible when (not CompanyCustomerExists)
                        TransientNationalAccountGroup.NatCompany
                            label is "NationalAccountCompany"
                        TransientNationalAccountGroup.NatCompany.Name
                            no label
                            display as text
                paragraph
                    visible when (CompanyCustomerExists)
                        TransientNationalAccountGroup.NatCompany.RepresentativeText
                            label is "NationalAccountCompany"
                            display as text
                paragraph
                    TransientNationalAccountGroup.NatCustomer.RepresentativeText
                        label is "NationalAccountCustomer"
                        display as text
        header2 of "ContactInformation"
        three column distributed
            column1
                Contact
                    label is "Name"
            column2
                paragraph
                    EmailAddress
                        label is "Email"
                    visible when (EmailEntered)
                        button of "Send"
                            link is "mailto:<EmailAddress>"
                            display as link
            column3
                URLAddress
                    label is "Website"
                visible when (URLEntered)
                    button of "View"
                        link is "<URLAddress>"
                        display as link
        three column distributed
            column1
                EDINumber
                    label is "EDINumber"
            column2
                AlternateEDINumber
                    label is "AlternateEDI"
                    show up to 20 characters
            column3
                AlternateEDIType
                    label is "AlternateEDIType"
        paragraph
            PhoneNumber
        paragraph
            MobileNumber.MobilePhoneNumber.InternationalPrefix
                label is "MobileCountry/\\JurisdictionCode"
            MobileNumber.MobilePhoneNumber.SubscriberNumber
                label is "MobileNumber"
            MobileNumber.SmsEnabled
                label is "SmsEnabled"
        paragraph
            FaxNumber.InternationalPrefix
                label is "FaxCountry/\\JurisdictionCode"
            FaxNumber.SubscriberNumber
                label is "FaxNumber"
            FaxNumber.Extension
                label is "Extension"
        paragraph
            TelexNbr
                label is "Telex"
        visible when (Company.UseIDM)
            header2 of "DocumentDistributionOptions"
            four column table
                column headers
                    "Print"
                    "Email"
                    "From_\\And_\\Reply_\\To_\\Email"
                    "To_\\Email_\\Option"
                row headers
                    "Receivable_\\Invoice"
                    "Receivables_\\Statement"
                    "Basic_\\Dunning_\\Letter"
                    "Advanced_\\Dunning_\\Letter"
                    "Payment_\\Request_\\Notice"
                    "EFT_\\Notification_\\Print"
                    "Payment_\\Receipt"
                    "Prepayment_\\Receipt"
                    "Sublease_\\Billing_\\Invoice"
                column1
                    PrintReceivableInvoice
                        no label
                    PrintReceivablesStatement
                        no label
                    PrintBasicDunningLetter
                        no label
                    PrintAdvancedDunningLetter
                        no label
                    PrintPaymentRequestNotice
                        no label
                    blank line
                    PrintPaymentReceipt
                        no label
                    PrintPrepaymentReceipt
                        no label
                    PrintSubleaseBillingInvoice
                        no label
                column2
                    EmailReceivableInvoice
                        no label
                    EmailReceivablesStatement
                        no label
                    EmailBasicDunningLetter
                        no label
                    EmailAdvancedDunningLetter
                        no label
                    EmailPaymentRequestNotice
                        no label
                    EmailEFTNotificationPrint
                        no label
                    EmailPaymentReceipt
                        no label
                    EmailPrepaymentReceipt
                        no label
                    EmailSubleaseBillingInvoice
                        no label
                column3
                    paragraph
                        visible when (EmailReceivableInvoice)
                            ReceivableInvoiceFromAndReplyToEmail
                                no label
                        visible when (not EmailReceivableInvoice)
                            ReceivableInvoiceFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailReceivablesStatement)
                            ReceivablesStatementFromAndReplyToEmail
                                no label
                        visible when (not EmailReceivablesStatement)
                            ReceivablesStatementFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailBasicDunningLetter)
                            BasicDunningLetterFromAndReplyToEmail
                                no label
                        visible when (not EmailBasicDunningLetter)
                            BasicDunningLetterFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailAdvancedDunningLetter)
                            AdvancedDunningLetterFromAndReplyToEmail
                                no label
                        visible when (not EmailAdvancedDunningLetter)
                            AdvancedDunningLetterFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailPaymentRequestNotice)
                            PaymentRequestNoticeFromAndReplyToEmail
                                no label
                        visible when (not EmailPaymentRequestNotice)
                            PaymentRequestNoticeFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailEFTNotificationPrint)
                            EFTNotificationPrintFromAndReplyToEmail
                                no label
                        visible when (not EmailEFTNotificationPrint)
                            EFTNotificationPrintFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailPaymentReceipt)
                            PaymentReceiptFromAndReplyToEmail
                                no label
                        visible when (not EmailPaymentReceipt)
                            PaymentReceiptFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailPrepaymentReceipt)
                            PrepaymentReceiptFromAndReplyToEmail
                                no label
                        visible when (not EmailPrepaymentReceipt)
                            PrepaymentReceiptFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailSubleaseBillingInvoice)
                            SubleaseBillingInvoiceFromAndReplyToEmail
                                no label
                        visible when (not EmailSubleaseBillingInvoice)
                            SubleaseBillingInvoiceFromAndReplyToEmail
                                no label
                                display only
                column4
                    paragraph
                        valid when (EmailReceivableInvoice)
                            ReceivableInvoiceEmailOption
                                no label
                    paragraph
                        valid when (EmailReceivablesStatement)
                            ReceivablesStatementEmailOption
                                no label
                    paragraph
                        valid when (EmailBasicDunningLetter)
                            BasicDunningLetterEmailOption
                                no label
                    paragraph
                        valid when (EmailAdvancedDunningLetter)
                            AdvancedDunningLetterEmailOption
                                no label
                    paragraph
                        valid when (EmailPaymentRequestNotice)
                            PaymentRequestNoticeEmailOption
                                no label
                    paragraph
                        valid when (EmailEFTNotificationPrint)
                            EFTNotificationPrintEmailOption
                                no label
                    paragraph
                        valid when (EmailPaymentReceipt)
                            PaymentReceiptEmailOption
                                no label
                    paragraph
                        valid when (EmailPrepaymentReceipt)
                            PrepaymentReceiptEmailOption
                                no label
                    paragraph
                        valid when (EmailSubleaseBillingInvoice)
                            SubleaseBillingInvoiceEmailOption
                                no label
