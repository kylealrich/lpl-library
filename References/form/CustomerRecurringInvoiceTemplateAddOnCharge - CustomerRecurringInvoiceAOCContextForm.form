CustomerRecurringInvoiceAOCContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                column2
                    Customer.RepresentativeText
                        label is "Customer"
                column3
                    CustomerRecurringInvoiceTemplate.ReceivableInvoiceType
                        label is "Type"
                column4
                    RecurringInvoiceTemplate
                        label is "InvoiceTemplate"
            four column distributed
                column1
                    visible when (CustomerRecurringInvoiceTemplateLine not entered)
                        text of "*Header_\\Add_\\On_\\Charge*"
                            bold
                    visible when (CustomerRecurringInvoiceTemplateLine entered)
                        text of "*Line<CustomerRecurringInvoiceTemplateLine>_\\Add_\\On_\\Charge*"
                            bold
                visible when (CustomerRecurringInvoiceTemplateAddOnCharge entered)
                    column2
                        GrossAmount
                            label is "GrossAmount"
