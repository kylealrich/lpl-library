MobileRequesterFormContext is a Form
    title is "RequesterFormContext"
    Layout
        visible when (RecordExists)
            three column table
                column1
                    visible when (ShoppingRequestingLocationRel.Picture.File entered)
                        ShoppingRequestingLocationRel.Picture.File
                            no label
                            align as label
                            display as full image up to 3 lines
                column2
                    ShoppingCompanyRel.Name
                        label is "Company"
                        display as text
                column3
                    ShoppingRequestingLocationRel.Name
                        label is "Location"
                        display as text
            paragraph
                visible when (RequisitionRel.BudgetEditInProgress)
                    text of "BudgetEditsInProgress"
                        bold
                        color of red
                visible when (RequisitionRel.BudgetEditFailure)
                    text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                        bold
                        color of red
            paragraph
                RequisitionRel.DerivedRequsitionAmountCurrency
                    label is "Total"
                        header3
                    display as text
                button of "Release"
                    valid when (RequisitionRel.IsForRelease)
                    action is ReleaseRequisition
                    is primary
