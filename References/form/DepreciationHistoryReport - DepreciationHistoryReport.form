DepreciationHistoryReport is an ActionForm
    action is DepreciationHistoryReport
    Layout
        header2 of "SelectionOptions"
        paragraph
            Book
            Book.Description
                no label
                display as text
        paragraph
            HistFromDate
                label is "FromHistoricalDate"
            HistToDate
                label is "ToHistoricalDate"
        paragraph
            InsrvFromDate
                label is "FromInServiceDate"
            InsrvToDate
                label is "ToInServiceDate"
        paragraph
            Company
                label is "Company"
                select is Companies
            Company.CompanyName
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            Classification
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division.Description
                no label
                display as text
        paragraph
            AssetType
                label is "Type"
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        paragraph
            Property
            Category
        paragraph
            Disposals
            Transfers
                label is "IntercompanyTransfers"
        header2 of "AdditionalOptions"
        paragraph
            Method
                select is DepreciationMethods
            Method.Description
                no label
                display as text
        single column
            LifeYears
        paragraph
            TaxExempt
            Used
        blank line
        paragraph
            Asset
                select is AllAssets
            Asset.Description
                no label
                display as text
        paragraph
            AssetLease.LeaseCompany
                label is "OrCompany"
            AssetLease.LeaseCompany.Name
                no label
                display as text
            AssetLease.Lease
                label is "Lease"
        single column
            TagNumber
                label is "Tag"
        paragraph
            AssetGroup
                select is AssetGroups
            AssetGroup.Description
                no label
                display as text
        header2 of "OutputOptions"
        single column
            header3 of "PrintTotals"
            header4 of "Sequence"
            paragraph
                LeaseOption
                    label is "Lease"
            paragraph
                LocOption
                    label is "Location"
            paragraph
                DivOption
                    label is "Division"
            paragraph
                TypeOption
                    label is "Type\\,Sub"
            paragraph
                AstgrpOption
                    label is "AssetGroup"
            paragraph
                AssetOption
                    label is "Asset"
            header4 of "Subsequence"
            paragraph
                SubsortOption
                    label is "Subsort"
            header4 of "Miscellaneous"
            paragraph
                CatOption
                    label is "Category"
                PropOption
                    label is "Property"
            paragraph
                PageBreak
                ReportOption
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DepreciationHistoryReportReport_RDG
            column2 of 25%
                DepreciationHistoryReportReport_XPT
