PurchaseOrderInterfaceCommentForm is a Form
    is primary
    title is "PurchaseOrderRequestComment"
    Layout
        four column distributed
            display as text
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
                PurchaseOrderInterface.SourceDocumentOrigin
                PurchaseOrderInterface.RequestingLocation
                paragraph
                    visible when (PurchaseOrderInterface.SourceDocumentNumeric entered)
                        PurchaseOrderInterface.SourceDocumentNumeric
                            label is "SourceDocument"
                    visible when (PurchaseOrderInterface.SourceDocumentAlpha entered)
                        PurchaseOrderInterface.SourceDocumentAlpha
                            label is "SourceDocument"
                    PurchaseOrderInterface.LineNumber
        blank line
        two column
            column1
                CommentTitle
                    label is "Title"
                paragraph
                    Attachment.Title
                        label is "Attachment"
                    visible when (false)
                        Attachment.MimeType
                    visible when (HasAttachment)
            column2
                CommentType
                    label is "Type"
                Attachment.File
        single column
            CommentText
                label is "Text"
                use text area of 12 lines
