ConfigureListHeaderStyleForm is an ActionForm
    action is ConfigureListHeaderFillStyle
    title is "ConfigureListHeaderStyle"
    Layout
        header3 of "Header_Fill_Color"
        two column
            column1
                ParamsFillType
                    raise yellow alert when (ShadeFillColorConfiguredInHierarchyOnly)
                        mouse over text is "ConfiguredInHierarchy"
            column2
                visible when (ParamsFillType.PredefinedColor)
                    ParamFillColor
                        display as required when (ParamsFillType.PredefinedColor)
                visible when (ParamsFillType.RGB_Color)
                    ParamFillRGB
                        raise blue alert when (true)
                            mouse over text is "example:_rgb(0,0,0)"
                        display as required when (ParamsFillType.RGB_Color)
                visible when (ParamsFillType.HexValue)
                    ParamFillHexValue
                        raise blue alert when (true)
                            mouse over text is "example:_<HexExampleColor>"
                        display as required when (ParamsFillType.HexValue)
        header3 of "Header_Font_Color"
        two column
            column1
                ParamsFontType
                    raise yellow alert when (ShadeFontColorConfiguredHierarchyOnly)
                        mouse over text is "ConfiguredInHierarchy"
            column2
                visible when (ParamsFontType.PredefinedColor)
                    ParamFontColor
                        display as required when (ParamsFontType.PredefinedColor)
                visible when (ParamsFontType.RGB_Color)
                    ParamFontRGB
                        raise blue alert when (true)
                            mouse over text is "example:_rgb(0,0,0)"
                        display as required when (ParamsFontType.PredefinedColor)
                visible when (ParamsFontType.HexValue)
                    ParamFontHexValue
                        raise blue alert when (true)
                            mouse over text is "example:_#0771de"
                        display as required when (ParamsFontType.PredefinedColor)
