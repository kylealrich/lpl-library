WorkOrderBurdenCommentForm is a Form
    is primary
    propagate as a drill
    title is "WorkOrder_<WorkOrder>_Burden_<WorkOrderBurden>_Comment_<WorkOrderBurdenComment>"
    Layout
        display as text
            three column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                    InventoryLocation.RepresentativeText
                        label is "Location"
                column2
                    WorkOrder
                    WorkOrderBurden
                column3
                    WorkOrder.Item.RepresentativeText
                    paragraph
                        WorkOrder.Status
                        WorkOrder.PickingFeedbackStatus
                        WorkOrder.ProductionFeedbackStatus
        paragraph
            WorkOrderBurden.BurdenCode.RepresentativeText
                display as text
        header2 of "_"
        single column
            WorkOrderBurdenComment
                display as text
            Name
                label is "Title"
            Type
            Comment
