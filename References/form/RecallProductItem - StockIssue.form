StockIssue is an ActionForm
    action is StockIssue
    title is "StockIssue"
    Layout
        display as text
            three column distributed
                RecallNotice.RepresentativeText
                paragraph
                    RecallProduct
                    RecallProduct.ProductName
                        no label
                paragraph
                    RecallProductItem
                    Description
                        no label
        three column distributed
            visible when (IsItemMaster)
                paragraph
                    Quantity
                    Item.StockUOM
                        no label
                        display as text
            visible when (not IsItemMaster)
                paragraph
                    Quantity
                    TranUom
                        no label
            InventoryDocumentGroup.Bin
                label is "Bin"
        paragraph
            ActionType
                no label
                display as horizontal radio buttons
        visible when (ActionType.Create)
            three column distributed
                paragraph
                    InventoryDocumentGroup.InventoryCompany
                    InventoryDocumentGroup.InventoryCompany.Name
                        no label
                        display as text
                paragraph
                    InventoryDocumentGroup.ToCompanyLocationGroup.ToCompany
                        label is "ToCompany"
                    InventoryDocumentGroup.ToCompanyLocationGroup.ToCompany.Name
                        no label
                        display as text
            three column distributed
                paragraph
                    InventoryDocumentGroup.InventoryLocation
                        label is "InventoryLocation"
                    InventoryDocumentGroup.InventoryLocation.Name
                        no label
                        display as text
                paragraph
                    InventoryDocumentGroup.ToCompanyLocationGroup.RequestingLocation
                        label is "RequestingLocation"
                    InventoryDocumentGroup.ToCompanyLocationGroup.RequestingLocation.Name
                        no label
                        display as text
                paragraph
                    TranDate
                        label is "IssueDate"
                    PostDate
        visible when (ActionType.Append)
            three column distributed
                paragraph
                    InventoryDocumentGroup.InventoryCompany
                    InventoryDocumentGroup.InventoryCompany.Name
                        no label
                        display as text
                paragraph
                    InventoryDocumentGroup.InventoryLocation
                        label is "InventoryLocation"
                    InventoryDocumentGroup.InventoryLocation.Name
                        no label
                        display as text
                InventoryDocumentGroup.InventoryTransaction
                    label is "Document"
                    select is InventoryIssueDocument
        visible when (CatchWeight)
            paragraph
                CtwSecondaryQty
                    label is "SecondaryQuantity"
                Item.SecondaryUOM
                    no label
                    display as text
