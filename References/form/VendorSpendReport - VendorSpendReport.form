    action is VendorSpendReport
    Layout
        three column
            Company
                select is Companies
            PayGroup
                select is PayGroups
            VendorGroup
                select is VendorGroups
        two column
            ProcessLevel
                select is ProcessLevels
            VendorClass
        blank line
        two column
            FromDate
                label is "FromInvoicePostDate"
            ThruDate
                label is "ToInvoicePostDate"
        header2 of "Main"
        two column
            FromVendor
                label is "FromVendor"
            ThruVendor
                label is "ToVendor"
        blank line
        single column
            VendorTotalMin
                label is "VendorTotalMinimum"
        single column
            NbrVendors
                label is "Number_ofVendors_toRank"
        single column
            InvoiceType
        single column
            PaymentStatus
        single column
            DiscountFlag
                label is "IncludeDiscounts"
        single column
            HistRecFlag
                label is "IncludeArchiveRecords"
        two column
            ReportOption
            ContactOption
                label is "IncludeVendorContact"
        header2 of "Options"
        blank line
        blank line
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                VendorSpendReportReport_RDG
            column2 of 25%
                VendorSpendReportReport_XPT
