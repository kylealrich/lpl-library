CreateTransferContextForm is a Form
    title is "BankTransfer"
    Layout
        four column table
            column1
                visible when (not TransactionExists)
                    paragraph
                        StudentActivityDistrict
                            label is "SchoolDistrict"
                            display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivityBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                        initial value is StudentActivitySchool.DefaultBankAccount
                paragraph
                    StudentActivityBankTransaction
                        label is "TransactionNumber"
                        select is BankTransactions
            column2
                visible when (not TransactionExists)
                    paragraph
                        StudentActivityDistrict.Name
                            no label
                            display as text
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    StudentActivityBankAccount.Description
                        no label
                        display as text
                paragraph
                    TransactionDate
            column3
                visible when (not TransactionExists)
                    blank line
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                paragraph
                    Status
                        display as text
                paragraph
                    TransactionAmount
                        label is "Amount"
            column4
                visible when (not TransactionExists)
                    blank line
                blank line
                blank line
                paragraph
                    Description
        visible when (Status.Entered)
            header3 of "TransferToDetails"
            visible when (not TransactionExists)
                paragraph
                    TransferToBankAccount
                        label is "TransferToBankAccount"
                    TransferToBankAccount.StudentActivityBankAccount.Description
                        no label
                        display as text
                paragraph
                    TransferAmount
                        label is "Amount"
            visible when (TransactionExists)
                paragraph
                    TotalTransferToAmount
                    button of "AddTransferToBankAccount"
                        action is CreateTransferToBankAccount
                paragraph
                    visible when (OutOfBalance)
                        OutOfBalanceAmount
