InvoiceVerificationReport is an ActionForm
    action is InvoiceVerificationReport
    Layout
        single column
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            paragraph
                ProcessLevel
                    select is ProcessLevels
                ProcessLevel.Name
                    no label
                    display as text
            text of "Or"
            paragraph
                CompanyGroup
                    label is "CompanyGroup"
                CompanyGroup.Description
                    no label
                    display as text
            paragraph
                CutoffDate
                text of "Or"
                AddSubtract
                    label is "Number_ofDays"
                CutoffDays
                    no label
            PrintOption
        three column distributed
            column1
                paragraph
                    SelectOption
                        label is "Reprint"
                paragraph
                    visible when (not Company.ManualInvoiceNumbering)
                        InvcPrefixGrp
                            label is "InvoiceNumberRange"
            column2
                paragraph
                    CertNbrOption
                        label is "PrintCertificationNumber"
                paragraph
                    visible when (not Company.ManualInvoiceNumbering)
                        FrInvcNumber
                            label is "FromInvoice"
            column3
                paragraph
                    text of "_"
                paragraph
                    visible when (not Company.ManualInvoiceNumbering)
                        ToInvcNumber
                            label is "ToInvoice"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InvoiceVerificationReportReport_RDG
            column2 of 25%
                InvoiceVerificationReportReport_XPT
