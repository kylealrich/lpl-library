LeaseInterestCalculation is an ActionForm
    action is LeaseInterestCalculation
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
        visible when (LeaseCompanyGroup.Lease)
            paragraph
                LseCompany
                    label is "Company"
                    select is PayablesCompanyList
                LseCompany.Name
                    no label
                    display as text
            paragraph
                LseLease
                    label is "Lease"
                    select is AllLeases
                    show up to 20 characters
                LseLease.Description
                    no label
                    display as text
        visible when (LeaseCompanyGroup.CompanyGroup)
            paragraph
                GcgCompanyGroup
                    label is "CompanyGroup"
                    select is CompanyGroupsInFinanceEnterpriseGroup
                GcgCompanyGroup.Description
                    no label
                    display as text
        paragraph
            CalcThruDate
                label is "CalculationThroughDate"
            PostDate
                label is "PostingDate"
        paragraph
            UpdateOption
                label is "Update"
        paragraph
            CurrencyType
                label is "Currency"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                LeaseInterestCalculationReport_RDG
            column2 of 25%
                LeaseInterestCalculationReport_XPT
