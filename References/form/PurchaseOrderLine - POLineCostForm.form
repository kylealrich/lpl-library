POLineCostForm is a Form
    title is "POLineCost"
    Layout
        display as text
            paragraph
                visible when (not IsCatchWeightItem)
                    VendorBuyUnitCost
                        label is "UnitCost"
                    EnteredBuyUOM
                        no label
                visible when (IsCatchWeightItem)
                    VendorBuyUnitCost
                    EnteredBuyUOM
                        no label
                    VendorPriceUnitCost
                        label is "VendorUnitPrice"
                    VendorPriceUOM
                        no label
                PurchaseOrder.Currency
                    label is "Currency"
                CostCode
                    label is "CostSource"
                visible when (not CostOption.CostRequired)
                    CostOption
            two column
                column1
                    ExtendedAmount
                        label is "ExtendedLineAmount"
                    OrderedAmount
                    visible when (Taxable)
                        visible when (HasInvoicedTaxAmount)
                            InvoicedTaxAmount
                                label is "InvoicedTaxAmount"
                    visible when (not ItemType.Service)
                        DerivedNonServiceMatchedAmount
                            label is "MatchedAmount"
                    visible when (ItemType.Service)
                        MatchServiceAmount
                            label is "MatchedServiceAmount"
                    OpenToMatchAmount
                column2
                    AddOnChargesForALineForUI
                        label is "TotalAddOnChargeAmount"
                    LandedUnitCost
                    visible when (IsCatchWeightItem)
                        VendorPriceUOM
                            no label
                    visible when (Taxable)
                        visible when (HasAccruedTaxAmount)
                            AccruedTaxAmount
                                label is "AccruedTaxAmount"
                    visible when (not ItemType.Service)
                        DerivedMatchedNotReceivedAmount
                            label is "MatchedNotReceivedAmount"
                    ServiceCancelAmount
                        label is "CanceledAmount"
