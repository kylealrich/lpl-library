RecommendationGridViewForm is a CompositeForm
    title is "InventoryItemLocation"
    context form is BasicContextForm
    Recommendation is a Panel
        title is "Recommendation"
        visible when (IsPerpetualLocation)
        list is IIHItemLocation.RecommendationGridViewList
    ParRecommendation is a Panel
        title is "Recommendation"
        visible when (IsParLocation)
        list is IIHItemLocation.ParRecommendationGridViewList
