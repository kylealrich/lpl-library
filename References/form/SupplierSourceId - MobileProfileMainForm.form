MobileProfileMainForm is a Form
    title is "ProfileMain"
    Layout
        display as text
            header1 of "_"
            paragraph
                visible when (ContactTitle entered)
                    button of icon.roles
                    ContactTitle
                        no label
            paragraph
                button of icon.mail
                EmailAddress
                    no label
            paragraph
                visible when (TelephoneNumber entered)
                    button of icon.phone
                    DerivedTelephoneNumber
                        no label
            paragraph
                visible when (MobilePhone entered)
                    button of icon.mobile
                    DerivedMobileNumber
                        no label
            paragraph
                button of icon.home
                FullAddressDisplay
                    no label
            paragraph
                button of icon.edit
                    link is ProfileNav
                button of "EditProfile"
                    link is ProfileNav
                    display as link
            visible when (RegistrationComplete)
                header2 of "_"
                paragraph
                    text of "<SummaryText>"
                        italics
