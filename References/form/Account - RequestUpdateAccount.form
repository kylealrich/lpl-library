RequestUpdateAccount is an ActionForm
    action is RequestUpdateAccount
    title is "UpdateAccount"
    Layout
        header2 of "ReviewAccountUpdateRequest"
        visible when (actor.initiator)
            header4 of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_updated"
        two column table
            display as text
                column1 of 40%
                    visible when (not actor.initiator)
                        RequestedBy
                            display as text
                        button of "<RequesterPhone.SubscriberNumber>"
                            link is "tel:<RequesterPhone.SubscriberNumber>"
                            label is "Phone"
                            display as link
                    RequestPriority
                        label is "Priority"
                    AllowUnits
                column2 of 60%
                    visible when (not actor.initiator)
                        RequesterActor
                            label is "ID"
                            display as text
                        button of "<RequesterEmail>"
                            link is "mailto:<RequesterEmail>"
                            label is "Email"
                            display as link
                    NeededBy
                    Currency
        visible when (actor.initiator)
            two column table
                column1 of 50%
                    RequestPriority
                        label is "Priority"
                    AllowUnits
                column2 of 50%
                    NeededBy
                    Currency
        two column table
            column1
                AccountDescription
        header2 of "ActionComment"
        single column
            action comment
                no label
                use text area
        visible when (not actor.initiator)
            header2 of "<FinanceEnterpriseGroup.AccountLabel>"
            two column table
                column1
                    FinanceEnterpriseGroup
                        display as text
                column2
                    Account
                        label is "<FinanceEnterpriseGroup.AccountLabel>"
            two column table
                column1
                    AccountType
                        label is "<FinanceEnterpriseGroup.AccountLabel>Type"
            two column table
                column1
                    AccountSubType
                        label is "SubType"
            two column table
                column1
                    visible when (FinanceEnterpriseGroup.UseSubAccounts)
                        ValidSubAccounts
                column2
                    visible when (MissingSubAccounts)
                        button of "CreatePostingAccounts"
                            action is CreateSubAccounts
            single column
                text of "AddToChartsWhereThis<FinanceEnterpriseGroup.AccountLabel>Exists"
                    bold
                    align as label
                LikeChartAccount
                    label is "<FinanceEnterpriseGroup.AccountLabel>InChart"
            two column table
                display as text
                column1
                    visible when (not AccountExists)
                        ChartSection
                column1
                    visible when (AccountExists)
                        ChartSection
            header2 of "Additional<FinanceEnterpriseGroup.AccountLabel>Options"
            single column
                Active
            paragraph
                effective date
            paragraph
                has future changes
                    label is "FutureChanges"
            two column table
                column1
                    SystemAccount
                        label is "System<FinanceEnterpriseGroup.AccountLabel>"
            two column table
                column1
                    SystemRestriction
                column2
                    RequireProject
                        label is "Require_<FinanceEnterpriseGroup.ProjectLabel>"
            two column table
                column1
                    NaturalBalance
            two column table
                column1
                    TranslationCode
                        show up to 6 characters
                column2
                    TranslationCode.Description
                        display as text
            two column table
                column1
                    Revalue
                column2
                    InterfaceInDetail
            paragraph
                XbrlTag
                    label is "XBRLTag"
