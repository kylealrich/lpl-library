AddForecastTransaction is an ActionForm
    action is AddForecastTransaction
    title is "AddForecastTransaction"
    Layout
        paragraph
            CashForecast
                display as text
            CashForecast.Description
                no label
                display as text
        paragraph
            CashForecastAccount.CashManagementAccount
                display as text
            CashForecastAccount.CashManagementAccount.Title
                no label
                display as text
        paragraph
            PrmCashTransactionCategory
                label is "Category"
                select is CashTransactionCategorySelect
            PrmCashTransactionCategory.Description
                no label
                display as text
        header2 of "TransactionDetails"
        single column
            PrmForecastCreationParameter.ForecastCalculation
                display as horizontal radio buttons
        visible when (PrmForecastCreationParameter.ForecastCalculation.Historical)
            paragraph
                PrmForecastCreationParameter.ActualDateRange.Begin
                    label is "ActualStartDate"
                    mouse over text is "Date_range_to_pull_historical_amounts_from"
                    display as required when (PrmForecastCreationParameter.ForecastCalculation.Historical)
                text of "-"
                PrmForecastCreationParameter.ActualDateRange.End
                    label is "EndDate"
                    display as required when (PrmForecastCreationParameter.ForecastCalculation.Historical)
            paragraph
                PrmForecastCreationParameter.HistoricalCalculationOption
                    mouse over text is "Calculation_to_perform_on_actual_amounts"
                    display as required when (PrmForecastCreationParameter.ForecastCalculation.Historical)
                PrmForecastCreationParameter.CalculationAdjustment
                    mouse over text is "PercentageByWhich_to_increase_actual_amounts"
        visible when (PrmForecastCreationParameter.ForecastCalculation.Calculated)
            paragraph
                PrmForecastCreationParameter.EnteredCalculationOption
                    display as required when (PrmForecastCreationParameter.ForecastCalculation.Calculated)
                visible when (PrmForecastCreationParameter.EnteredCalculationOption.DayOfWeek)
                    PrmForecastCreationParameter.DayOfWeek
                        display as required when (PrmForecastCreationParameter.EnteredCalculationOption.DayOfWeek)
                visible when (PrmForecastCreationParameter.EnteredCalculationOption.DayOfMonth)
                    PrmForecastCreationParameter.DayOfMonth
                        display as required when (PrmForecastCreationParameter.EnteredCalculationOption.DayOfMonth)
            visible when (PrmForecastCreationParameter.EnteredCalculationOption.Date)
                single column
                    PrmForecastCreationParameter.CalculationMethod
                paragraph
                    PrmForecastCreationParameter.ForecastDateArray.ForecastDate[1]
                        label is "ForecastDate1"
                    PrmForecastCreationParameter.ForecastDateArray.ForecastDate[2]
                        label is "Date2"
                    PrmForecastCreationParameter.ForecastDateArray.ForecastDate[3]
                        label is "Date3"
                    PrmForecastCreationParameter.ForecastDateArray.ForecastDate[4]
                        label is "Date4"
            visible when (PrmForecastCreationParameter.EnteredCalculationOption.DateRange)
                single column
                    PrmForecastCreationParameter.CalculationMethod
                paragraph
                    PrmForecastCreationParameter.ForecastDateRange.Begin
                        label is "StartDate"
                    text of "-"
                    PrmForecastCreationParameter.ForecastDateRange.End
                        label is "EndDate"
            visible when (PrmForecastCreationParameter.EnteredCalculationOption.DayOfWeek)
                single column
                    PrmForecastCreationParameter.CalculationMethod
                paragraph
                    PrmForecastCreationParameter.ForecastDateRange.Begin
                        label is "StartDate"
                    text of "-"
                    PrmForecastCreationParameter.ForecastDateRange.End
                        label is "EndDate"
            visible when (PrmForecastCreationParameter.EnteredCalculationOption.DayOfMonth)
                single column
                    PrmForecastCreationParameter.CalculationMethod
                paragraph
                    PrmForecastCreationParameter.ForecastDateRange.Begin
                        label is "StartDate"
                    text of "-"
                    PrmForecastCreationParameter.ForecastDateRange.End
                        label is "EndDate"
            single column
                PrmForecastCreationParameter.ForecastAmount
                    display as required when (PrmForecastCreationParameter.ForecastCalculation.Calculated)
