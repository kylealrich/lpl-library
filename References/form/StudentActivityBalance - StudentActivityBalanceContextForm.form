StudentActivityBalanceContextForm is a Form
    title is "ActivityBalances"
    Layout
        two column
            StudentActivityAccount
                label is "Activity"
                select is StudentActivityAccountSelectList
            StudentActivityAccount.Description
        three column
            StudentActivityClosedPeriod
                label is "Period"
            StudentActivityClosedPeriod.GeneralLedgerCalendarPeriod.Date
                label is "PeriodEndDate"
        single column
            visible when (HasBalanceAdjustment)
                BalanceAdjustment
            BeginningBalance
        paragraph
            PeriodReceipts
                label is "Receipts"
            PeriodDisbursements
                label is "Disbursements"
            PeriodTransfers
                label is "Transfers"
        paragraph
            PeriodEndingBalance
                label is "EndingBalance"
            visible when (HasTransactionDetails)
                button of "TransactionDetails"
                    link is TransactionDetails
