Process is a Form
    Layout
        header2 of "Rules"
        four column distributed
            column1
                TransactionDueDateChangeAllowed
                    label is "DueDateChangeAllowed"
                        left of field
                VerifyGLDateWithinGLDateRange
                    label is "VerifyPostDate"
                        left of field
                paragraph
                    ReceivableHoldCode
                        label is "HoldCode"
                        select is HoldCodeLists
                    ReceivableHoldCode.Description
                        no label
                        display as text
            column2
                CustomerDeletRetentionMonths
                    label is "CustomerDeleteMonths"
                TransactionCurrencyDisplay
                    label is "CurrencyDisplay"
                CustomerRiskCode
                    label is "RiskCode"
            column3
                SummarizeMultiLineTransactions
                    label is "SummarizeDetailForDisplay"
                        left of field
                NatAccountTransUpdateSource
                    label is "NationalAccountTransOption"
                AllowRebateEntry
                    label is "AllowEntryOfRebatesFromContracts"
            column4
                PeriodsPerYear
                PeriodOffset
                paragraph
                    TransactionHistoryDeletePeriods
                        label is "HistoryUpdatePeriods"
                    CreditChargebackPrefix
        header2 of "CashLedgerCodes"
        four column distributed
            column1
                paragraph
                    DepositBankCode
                        label is "DepositPaymentCode"
                        select is BankServices
                    DepositBankCode.Description
                        no label
                        display as text
            column2
                paragraph
                    RTMPaymentBankCode
                        label is "CancelPaymentCode"
                        select is BankServices
                    RTMPaymentBankCode.Description
                        no label
                        display as text
            column3
                paragraph
                    DepositAdjustmentBankCode
                        label is "AdjustmentPaymentCode"
                        select is BankServices
                    DepositAdjustmentBankCode.Description
                        no label
                        display as text
        header2 of "LastNumbers"
        seven column distributed
            column1
                DerivedLastChargebackBatchNumber
                    label is "R\\T\\M_andChargebackBatch"
                    display as text
                    display zero
            column2
                DerivedLastChargebackNumber
                    label is "Chargeback"
                    display as text
                    display zero
            column3
                DerivedLastCreditChargebackNumber
                    label is "CreditChargeback"
                    display as text
                    display zero
            column4
                DerivedLastGroupedObligationNumber
                    label is "ObligationGroup"
                    display as text
                    display zero
            column5
                DerivedLastEFTBalancingDebitMemoNbr
                    label is "LastCreditE\\F\\TBalancingDebitMemo"
                    display as text
                    display zero
            column6
                DerivedLastDunningLetterCycleID
                    label is "LastDunningCycleI\\D"
                    display as text
                    display zero
            column7
                paragraph
                    DerivedLastRTMPaymentNumber
                        label is "R\\T\\M"
                        display as text
                        display zero
                    button of "ChangeLastNumbers"
                        action is ChangeMiscellaneousLastNumbers
                        display as link
        blank line
        header2 of "Global"
        paragraph
            UseEWayBillNumber
                label is default
                    left of field
            ParallelReferenceFormat
            ParallelReferenceCheckDigit
                label is "CheckDigitType"
            text of "Sample:<DerivedStructedParallelReference>"
            ForeignTradePaymentReport
            visible when (ForeignTradePaymentReport)
                ForeignTradePaymentAmount
        paragraph
            VoucherReference
            visible when (VoucherReference)
                paragraph
                    VoucherReferenceReportingBasis
                    VoucherReferenceFormat
                        initial value is "{YEARYYYY}{MONTHMM}{000009}"
                    text of "Sample:<DerivedStructuredVoucherReferenceNumber>"
            ClaimsAndLiabilitiesReporting
            visible when (ClaimsAndLiabilitiesReporting)
                ThresholdAmount
                OutputXML
        paragraph
            LanguageCode
                label is "Locale"
                compact format
            LanguageCode.LocaleName
                no label
                display as text
