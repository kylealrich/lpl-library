SmartReconAOCMatchContext is a Form
    Layout
        four column distributed
            paragraph
                button of "Invoice<Invoice>"
                    link is PayablesInvoiceLink
                    display as link
                button of "PO<PurchaseOrder>"
                    link is PurchaseOrderLink
                    display as link
            paragraph
                text of "TotalSets:<NumberOfSets>"
                    left align
                button of "Link"
                    link is AllSetsNavigationAOCMatch
                    display as link
            visible when (not PayablesInvoice.InvoiceType.MatchPrepayment)
                paragraph
                    text of "Chargeback:"
                        left align
                    button of "<ChargebackYesOrNo>"
                        action is SetChargeback
                        display as link
                    visible when (Chargeback)
                        ChargebackReason
                            label is "Reason"
                            display as text
                        ChargebackReference
                            no label
                            display as text
                paragraph
                    visible when (UseNet)
                        text of "ChargebackTotal,Net:<NetSelectedAOCMatch>"
                            left align
                    visible when (UseOverbill)
                        text of "ChargebackTotal,Overbill:<OverbillSelectedAOCMatch>"
                            left align
            visible when (PayablesInvoice.InvoiceType.MatchPrepayment)
                paragraph
                    visible when (UseNet)
                        text of "Net:<NetSelectedAOCMatch>"
                            left align
                    visible when (UseOverbill)
                        text of "Overbill:<OverbillSelectedAOCMatch>"
                            left align
        visible when (PayablesInvoice.HasBeenMatched)
            two column table
                column1
                    DerivedMatchStatus
                        label is "MatchStatus"
                    PayablesInvoice.Status
                        label is "InvoiceStatus"
                    paragraph
                        PayablesInvoice.RuleGroup
                        PayablesInvoice.RuleGroup.Description
                            no label
                            display as text
                column2
                    display as text
                        PayablesInvoice.MatchProcessType
                        PayablesInvoice.MatchLevel
                        PayablesInvoice.MatchDate
        visible when (not PayablesInvoice.HasBeenMatched)
            six column distributed table
                column headers
                    "<QuantityMsg>"
                    "<TotalCostMsg>"
                    "|"
                    "<SetMsg>"
                    "<DiscrepancyMsg>"
                row headers
                    "Invoice"
                    "Receipt"
                    "Discrepancy"
                column1
                    display as text
                        PendingInvoiceAOCQuantity
                            no label
                        PendingReceiptAOCQuantity
                            no label
                        PendingQuantityAOCDifference
                            no label
                column2
                    display as text
                        PendingInvoiceAOCExtendedAmount
                            no label
                        PendingReceiptAOCExtendedAmount
                            no label
                        PendingTotalAOCDifference
                            no label
                        button of "CreateSet"
                            visible when (AllowCreateAOCSet)
                            action is CreateAOCSet
                column3
                    text of "|"
                    text of "|"
                    text of "|"
                column4
                    visible when (Previous1Exists)
                        button of "<Previous1MsgAOC>"
                            link is Previous1LinkAOCMatch
                            display as link
                    visible when (Previous2Exists)
                        button of "<Previous2MsgAOC>"
                            link is Previous2LinkAOCMatch
                            display as link
                    visible when (Previous3Exists)
                        button of "<Previous3MsgAOC>"
                            link is Previous3LinkAOCMatch
                            display as link
                column5
                    display as text
                        visible when (Previous1Exists)
                            Previous1DiscrepancyAOC
                                no label
                        visible when (Previous2Exists)
                            Previous2DiscrepancyAOC
                                no label
                        visible when (Previous3Exists)
                            Previous3DiscrepancyAOC
                                no label
                column6
                    visible when (Previous1Exists)
                        button of "Undo"
                            action is UndoSet1
                    visible when (Previous2Exists)
                        button of "Undo"
                            action is UndoSet2
                    visible when (Previous3Exists)
                        button of "Undo"
                            action is UndoSet3
            paragraph distributed
                visible when (PayablesInvoice.HasOpenMatchInvoiceMessages)
                    text of "*MessagesExist"
                        bold
                visible when (PayablesInvoice.DisplayCreateInProgress)
                    text of "<PayablesInvoice.CreateDetailsProcessingInBackgroundMsg>"
                        bold
                        italics
                        color of red
                visible when (PayablesInvoice.DisplayMatchInProgress)
                    text of "<MatchProcessingInBackgroundMsg>"
                        bold
                        italics
                        color of red
                visible when (PayablesInvoice.DisplayMatchInProgressWithAsyncFailure)
                    text of "<MatchProcessingInBackgroundAsyncFailureMsg>"
                        bold
                        italics
                        color of red
        single column
            FilesRebuilt
