ContactUpdateWizard is a Form
    title is "SupplierContactandLocationInformation"
    Layout
        header2 of "EnterInformationAboutYourself"
        single column
            MainContact.GivenName
                label is "FirstName"
            MainContact.FamilyName
                label is "LastName"
            ContactTitle
                label is "Title"
        paragraph
            TelephoneNumber
        paragraph
            MobilePhone
        paragraph
            FaxNumber
        paragraph
            EmailAddress
            ReceiveEmailNotification
        header2 of "MailingAddress"
        single column
            text of "AddressInformationWillBeDefaultedFromSupplierIfLeftBlank"
                bold
            blank line
            visible when (SupplierGroup.DisplayTypeForRegistration)
                LocationAddress
                    form is PostalAddressMinimumWithType
            visible when (not SupplierGroup.DisplayTypeForRegistration)
                LocationAddress
                    form is PostalAddressMinimum
