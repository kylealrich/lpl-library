ValidationContextInfoForm is a Form
    title is "ValidationInformation"
    Layout
        two column
            paragraph
                valid when (not ValidationInfo.ValidateAllData)
                    ValidationInfo.ValidationDateField.RepSetBCField
                        select is ValidationFieldSelect
                        when value changed
                            refresh ValidationInfo.ValidationDateField.DerivedFieldNameInfo
                            refresh ValidationInfo.DisplayBlankMessage
                    visible when (DisplayClientFields)
                        text of "-or-"
                        ValidationInfo.ValidationDateField.RepSetBCClientField
                            select is ValidationFieldSelect
                    visible when (not ValidationInfo.ValidateAllData)
                        ValidationInfo.ValidationDateField.DerivedFieldNameInfo
                            no label
                            display as text
                        visible when (ValidationInfo.DisplayBlankMessage)
                            text of "SelectedDateFieldIsNotRequired.RecordsWithABlankValueWillBeExcludedFromValidation."
                    text of "-or-"
                ValidationInfo.ValidateAllData
                visible when (CheckSumFieldRequired)
                    text of "AtLeastOneCheckSumFieldRequired"
                        display as tag
                            color of red
        visible when (not ValidationInfo.ValidateAllData)
            three column
                ValidationInfo.OffsetOptions.OffsetOption
                visible when (ValidationInfo.OffsetOptions.OffsetOption.OffsetDays)
                    ValidationInfo.OffsetOptions.OffsetDays
                visible when (ValidationInfo.OffsetOptions.OffsetOption.SpecificDate)
                    ValidationInfo.OffsetOptions.SpecificDate
        two column
            ValidationInfo.DisableCondition
                mouse over text is "CheckToDisableTheReplicationSetBusinessClassCondition,IfSpecified,WhenProcessingValidation."
            valid when (ValidationInfo.DisableCondition)
                ValidationInfo.ConditionOverride
