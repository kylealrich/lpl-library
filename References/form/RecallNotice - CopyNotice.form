CopyNotice is an ActionForm
    action is CopyNotice
    title is "CopyNotice"
    Layout
        header3 of "NewNoticeValues"
        paragraph
            RecallGroup
            RecallGroup.Description
                no label
                display as text
        single column
            FromNotice
                select is NonItemProposalNotices
            NewName
                label is "Name"
        single column
            NewDescription
                label is "Description"
                use text area of 2 lines
            NewType
                label is "Type"
        two column
            NewAnnouncementDate
                label is "AnouncementDate"
            NewReceivedDate
                label is "ReceivedDate"
        paragraph
            NewCoordinator
                label is "Coordinator"
                select is RecallCoordinatorList
        header3 of "CopyOptions"
        single column
            CopySelectAll
                label is "SelectAll"
            CopyDomains
                label is "Domains"
            CopyProducts
                label is "Products"
            CopyProductItems
                label is "ProductItems"
            CopyProductSerialNumbers
                label is "ProductSerialNumbers"
            CopyProductLotNumbers
                label is "ProductLotNumbers"
            CopyProductQuestions
                label is "ProductQuestions"
            CopyReferences
                label is "References"
            CopyComments
                label is "Comments"
