ColumnDetail is a CompositeForm
    is primary
    title is "ColumnDefinition"
    context form is GLColumnContext
    Actions
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    CalculationFields is a Panel
        visible when (GLColumnType.Calculated)
        list is GLColumnCalculationFieldRel.GLColumnCalculationFields
    DimensionFilters is a Panel
        visible when (GLColumnType.Standard)
        list is GLColumnFilterDimensionRel.ColumnDimensionFilters
