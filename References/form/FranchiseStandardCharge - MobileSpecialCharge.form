MobileSpecialCharge is a Form
    use for action UpdateSpecialCharge
    title is "UpdateSpecialCharge"
    restrict action Create
    restrict action Delete
    restrict action CreateNoteBasedCharge
    restrict action CreateSalesBasedCharge
    restrict action CreateSpecialCharge
    Actions
        action is Delete
            hide when invalid
        action is save
            label is "_"
    Layout
        header3 of "<ChargeType>Charge"
        paragraph
            Company
                display as text
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
                display as text
            Description
                no label
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
                display as text
        paragraph
            Active
        blank line
        single column
            header3 of "Options"
            Frequency
            ProcessLevel
            TaxableFlag
                label is "Taxable"
            TaxCode
            text of "Accounts"
                bold
            RevenueAccount
                label is "Sales"
                compact format
            AccrualAccount
                label is "Accrual"
                compact format
            AccrualOffsetAccount
                label is "AccrualOffset"
                compact format
