SingleAllocationLine is a Form
    title is "_"
    Layout
        three column
            column1
                AllocationLine
                    display when blank
                Description
                    display when blank
                AllocationStep
                    display when blank
                visible when (AllocationControl.Type.Actuals)
                    ProcessAllPostingBalance
                        display when blank
                    AllocateAllCurrencyAmounts
                        display when blank
            column2
                FromPostOption
                    display when blank
                visible when (AllocationControl.Type.Actuals)
                    AllocateYearToDate
                        display when blank
                    AllocateLifeToDate
                        display when blank
                SourcePercentage
                    display when blank
                AllowNegativeWeights
            column3
                ToPostOption
                    display when blank
                AllocateUnits
                    display when blank
                visible when (AllocationControl.Type.Actuals)
                    DerivedAutoReverse
                        display when blank
                visible when (Allocation.CustodialAccountInterest)
                    Allocation.CustodialAccountInterest
                        label is "<actor.context.FinanceEnterpriseGroup.FinanceDimension10Label>InterestAllocation"
                UseCustomGroupInSourceAddress
                visible when (not Allocation.CustodialAccountInterest)
                    visible when (MinimumTransactionAmount entered)
                        MinimumTransactionAmount
                        visible when (OverthrownAmountOption.DefaultFromAllocation)
                            Allocation.OverthrownAmountOption
                        visible when (not OverthrownAmountOption.DefaultFromAllocation)
                            OverthrownAmountOption
        visible when (HasComputePostOption)
            visible when (Compute entered)
                paragraph
                    Compute
                paragraph
                    Compute.Compute
                        label is "ComputeDefinition"
                        display when blank
                paragraph
                    visible when (ComputeAndBypassSourceBalance)
                        visible when (not AllocateUnits)
                            AllocationCurrency
                                label is "<DerivedAllocationCurrencyLabel>"
                        visible when (AllocateUnits)
                            DerivedAllocateUnitCurrency
                                label is "<DerivedAllocationCurrencyLabel>"
