ContractSubcontractorCommentForm is a Form
    is primary
    title is "ContractSubcontractorComment"
    Layout
        paragraph
            ContractGroup
            ContractGroup.ProcurementGroup.Description
                no label
                display as text
        paragraph
            Contract
            Contract.Name
                no label
                display as text
        paragraph
            ContractSubcontractor
            ContractSubcontractor.Subcontractor.SubcontractorName
                no label
                display as text
        single column
            CommentTitle
            Description
                use text area
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
