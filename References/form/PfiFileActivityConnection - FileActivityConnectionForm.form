FileActivityConnectionForm is a Form
    title is "FileActivityConnection"
    Layout
        single column
            PfiConfiguration
            FileSystem
            visible when (FileSystem.LSF)
                header2 of "LSFConnectionParameters"
                single column
                    WebRoot
                    text of "Example:_https://example.\\com:\\8443"
                        italics
                    User
                    Password
                    Timeout
                    button of "TestConnection"
                        action is TestConnection
                    header2 of "LSFVariables"
                    single column
                        GenDir
                        LawDir
            visible when (FileSystem.AmazonS3)
                header2 of "AmazonS\\3ConnectionParameters"
                single column
                    BucketName
                    Region
                    AccessKey
                    SecretKey
                    SocketTimeout
                    ConnectionTimeout
                    RequestTimeout
                    RetryCount
                    RetryWaitTime
                    WriteStorageClass
                    MultiPartUpload
                    button of "TestConnection"
                        action is TestConnection
