CopyItem is an ActionForm
    action is CopyItem
        on completion navigate to ItemFormNavigation
    Layout
        single column
            PrmItemGroup
                label is "ItemGroup"
            paragraph
                PrmFromItem
                    label is "FromItem"
                    select is CopyFromItem
                PrmFromItem.Description
                    no label
                    display as text
            visible when (ManualItemNumbering)
                PrmNewItem
                    label is "NewItem"
            PrmCopyComments
                label is "CopyComments"
            PrmCopyAttachments
                label is "CopyAttachments"
            PrmCopyItemLocations
                label is "CopyItemLocations"
            visible when (PrmCopyItemLocations)
                PrmCopyItemReorder
                    label is "CopyItemLocationReorderInformation"
        paragraph
            PrmNewManufacturer
                label is "NewManufacturer"
                compact format
            PrmNewManufacturerNumber
                label is "NewManufacturerNumber"
