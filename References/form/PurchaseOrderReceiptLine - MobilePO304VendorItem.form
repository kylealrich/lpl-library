MobilePO304VendorItem is a Form
    title is "VendorItem"
    Layout
        single column
            VendorItem
                select is MobileVendorItemSelect
            visible when (VendorItem.VendorItemDescription entered)
                VendorItem.VendorItemDescription
                    label is "Description"
                    display as text
            visible when (HasVendorItemBuyUOM)
                VendorItem.VendorBuyUOM.UnitOfMeasure
                    label is "BuyU\\O\\M"
                    display as text
                text of "<VendorItem.VendorBuyUOM.UOMConversion>_\\<VendorItem.VendorBuyUOM>per<Item.StockUOM>"
        visible when (VendorItem.Manufacturer entered)
            header3 of "ManufacturerInformation"
            two column distributed
                VendorItem.Manufacturer.ManufacturerCode
                    label is "Code"
                    display as text
                VendorItem.Manufacturer.ManufacturerDivision
                    label is "Division"
                    display as text
            single column
                VendorItem.ManufacturerNumber
                    display as text
        header1 of "_"
        single column
            ItemGTIN
                select is MobileItemGTINSelect
            ItemGTIN.AbbreviatedDescription
                label is "Description"
                display as text
            VendorItem.LabelerIdentificationCode
                label is "L\\I\\CCode"
                display as text
