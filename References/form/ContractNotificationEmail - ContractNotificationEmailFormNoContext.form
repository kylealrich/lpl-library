ContractNotificationEmailFormNoContext is a Form
    title is "NotificationEmailForDeliverable:<ContractDeliverable.Name>"
    Layout
        display as text
            single column
                SentTimeStamp
                    label is "Date_andTime"
                visible when (not FromSupplier)
                    SentToEmailAddress
                        label is "SentTo"
                visible when (FromSupplier)
                    SentFromEmailAddress
                        label is "SentFrom"
                visible when (SentToCc entered)
                    SentToCc
                visible when (SentToBcc entered)
                    SentToBcc
                EmailSubjectLine
                    label is "EmailSubject"
        single column
            EmailContent
                display as text
                use text area of 5 lines
