ReleaseAssets is an ActionForm
    action is ReleaseAssets
    Layout
        paragraph
            Release
                label is "Update"
        paragraph
            Process
                label is "Transaction"
        paragraph
            Company
                select is Companies
            Company.GeneralLedgerCompany.Name
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            AstLocationName
                label is "Location"
            AstLocationName.Description
                no label
                display as text
        paragraph
            AstDivision
                label is "Division"
                select is Divisions
            AstDivision.Description
                no label
                display as text
        paragraph
            AstAssetGroup
                label is "AssetGroup"
                select is AssetGroups
        paragraph
            AstAcctUnit
                label is "TransactionDimensions"
                select is PostingAccountingUnits
            AstAcctUnit.Description
                no label
                display as text
        paragraph
            AstAuGroup
                label is "AssetDimensionGroup"
                select is AccountingUnitGroupsWithinCompany
            AstAuGroup.Description
                no label
                display as text
        paragraph
            AstAssetType
                label is "AssetType"
                compact format
                select is AssetTypesWithinCompany
        single column
            AstCreatorId
                label is "CreatorI\\D"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ReleaseAssetsReport_RDG
                ReleaseAssetsErrorReport_RDG
            column2 of 25%
                ReleaseAssetsReport_XPT
                ReleaseAssetsErrorReport_XPT
