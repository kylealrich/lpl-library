UpdateMyContactInformation is an ActionForm
    action is UpdateMyContactInformation
    title is "ContactInformation"
    disable field options
    Layout
        single column
            text of "<CustomerGroup.ContactInformationText>"
                bold
                italics
                align as label
        blank line
        single column
            NewMainContact.GivenName
                label is "*_FirstName"
            NewMainContact.FamilyName
                label is "*_LastName"
        paragraph
            NewTelephoneNumber.InternationalPrefix
                label is "*_PhoneNumber"
            NewTelephoneNumber.SubscriberNumber
                no label
            NewTelephoneNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                italics
        paragraph
            visible when (not CustomerRepresentative.BillingRecvExtEntityEnabled)
                NewEmailAddress
                    label is "*_EmailAddress"
                NewReceiveEmailNotification
                    label is "ReceiveEmailNotification"
            visible when (CustomerRepresentative.BillingRecvExtEntityEnabled)
                visible when (ContactIsMe)
                    EmailAddress
                        display as text
                    button of "Update" with icon.edit
                        visible when (EmailAddress entered)
                        action is UpdateEmail
                        display as link
                    NewReceiveEmailNotification
                        label is "ReceiveEmailNotification"
                visible when (not ContactIsMe)
                    EmailAddress
                        display as text
                    button of "Update" with icon.edit
                        visible when (EmailAddress entered)
                        action is AdminUpdateEmail
                        display as link
                    NewReceiveEmailNotification
                        label is "ReceiveEmailNotification"
        single column
            blank line
            text of "*__=_Required"
