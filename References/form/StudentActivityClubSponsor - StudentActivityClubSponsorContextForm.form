StudentActivityClubSponsorContextForm is a Form
    title is "<mode>ClubSponsor"
    Layout
        four column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivityClubSponsor
                        label is "ClubSponsor"
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    Active
            column3
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    TotalReceiptAmount
            column4
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    TransactionCurrencyCode
                        label is "Currency"
                        display as text
        paragraph
            Description
                use text area of 3 lines
