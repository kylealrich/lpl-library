ManualResponseContext is a Form
    Layout
        visible when (not ResponseExists)
            three column distributed
                Company
                    show up to 6 characters
                paragraph
                    SourcingEvent
                        label is "Event#"
                        select is EventsOpenForBidBuyer
                        show up to 9 characters
                    SourcingEvent.Name
                        no label
                        display as text
            three column distributed
                NotifiedSupplier.SupplierGroup
                    show up to 6 characters
                paragraph
                    NotifiedSupplier.Supplier
                        show up to 9 characters
                    NotifiedSupplier.Supplier.SupplierName
                        no label
                        display as text
                paragraph
                    NotifiedSupplier.SupplierSourceId
                        label is "SupplierContact"
                        show up to 6 characters
                    NotifiedSupplier.SupplierSourceId.MainContact.FirstAndLastName
                        no label
                        display as text
        visible when (ResponseExists)
            display as text
                four column distributed
                    Company
                        show up to 6 characters
                    SourcingEvent.RepresentativeText
                    Status
                        display as tag
                            color of blue
                    SourcingEvent.CurrencyCode
                        label is "EventCurrency"
                four column distributed
                    NotifiedSupplier.SupplierGroup
                        show up to 6 characters
                    NotifiedSupplier.Supplier.RepresentativeText
                    paragraph
                        NotifiedSupplier.SupplierSourceId.RepresentativeText
                        button of icon.mail
                            link is "mailto:<NotifiedSupplier.SupplierSourceId.EmailAddress>"
                        button of icon.phone
                            link is "tel:<NotifiedSupplier.SupplierSourceId.TelephoneNumber>"
                    visible when (not LineResponsesExist)
                        visible when (SourcingEvent.AllowResponseInOtherCurrency)
                            EnteredCurrencyCode
                                label is "ResponseCurrency"
                    visible when (LineResponsesExist)
                        visible when (HasResponseOrNotAllowDifferentCurrency)
                            EnteredCurrencyCode
                                label is "ResponseCurrency"
            visible when (SEQuestionsNewExist)
                paragraph
                    text of "ToViewOrUpdate_EventQuestions"
                        bold
                        color of red
                    button of "Respond_toEventQuestions"
                        link is SourcingEventSupplierQuestions
