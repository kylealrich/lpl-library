RequestNewPostingProject is an ActionForm
    action is RequestNewPostingProject
    title is "RequestNewPosting<FinanceEnterpriseGroup.ProjectLabel>"
    Layout
        section of Request
            visible when (actor.initiator)
                header2 of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_created"
            visible when (not actor.initiator)
                display as text
                    single column
                        RequestedBy
                    two column table
                        column1
                            button of "<RequesterEmail>"
                                link is "mailto:<RequesterEmail>"
                                label is "Email"
                                display as link
                            NeededBy
                        column2
                            button of "<RequesterPhone.SubscriberNumber>"
                                link is "tel:<RequesterPhone.SubscriberNumber>"
                                label is "Phone"
                                display as link
                            RequestPriority
                                label is "Priority"
                                display as tag
                                    color of red when (RequestPriority.High)
                                    color of yellow when (RequestPriority.Medium)
                                    color of green when (RequestPriority.Low)
            visible when (actor.initiator)
                two column table
                    column1 of 50%
                        RequestPriority
                            label is "Priority"
                    column2 of 50%
                        NeededBy
            single column
                action comment
                    label is "ActionComment"
                    use text area of 3 lines
        section of Main
            two column distributed
                column1
                    paragraph
                        NewProject
                            label is "New<FinanceEnterpriseGroup.ProjectLabel>"
                            show up to 20 characters
                            display as required
                column2
                    Description
                        show up to 20 characters
                        display as required
            two column distributed
                column1
                    paragraph
                        ProjectStatus
                            label is "<FinanceEnterpriseGroup.ProjectLabel>Status"
                            select is ProjectStatusSelectList
                            show up to 10 characters
                            display as required
                        ProjectStatus.Description
                            no label
                            display as text
                column2
                    paragraph
                        Currency
                            show up to 2 characters
                            display as required
                        Currency.Description
                            no label
                            display as text
                            show up to 20 characters
            three column distributed
                column1
                    ProjectDateRange.BeginDate
                        label is "BeginDate"
                        display as required
                column2
                    ProjectDateRange.EndDate
                        label is "EndDate"
                        display as required
                column3
                    Active
            three column distributed
                column1
                    paragraph
                        Watch
                        WatchedBy
                        WatchedBy.Name.PreferredFirstAndLastName
                            no label
                            display as text
            header2 of "AdditionalInformation"
            four column distributed
                column1
                    Billable
                column2
                    Capital
                column3
                    IncludeInBudgetEdit
            four column distributed
                column1
                    visible when (FinanceEnterpriseGroup.FrontEndSplits)
                        ExcludeFromFES
                            label is "ExcludeFromFrontEndSplit"
                column2
                    visible when (FinanceEnterpriseGroup.ExpenseManagementIntegrated)
                        ExpenseManagement
            single column
                DefaultCodeBlock
                    label is "DefaultFinanceStructure"
                    compact format
            three column
                column1
                    paragraph
                        WorkType
                        ServiceType
                        UsageType
            four column distributed
                column1
                    PreAwardID
                column2
                    ProgramIncome
                column3
                    ProgramIncomeType
            two column
                column1
                    FinanceDimension2
                        label is "RelatedFundingSource"
                column2
                    FinanceDimension2.Description
                        no label
                        display as text
            header2 of "Address"
            four column distributed
                column1
                    AddressCode
                column2
                    AddressCode.Description
                        no label
                        display as text
                visible when (AddressCode entered)
                    column3
                        AddressCode.PostalAddress.DisplayAddressMultiline
                            label is "Address"
                            display as text
        section of BillingOverrides
            four column distributed
                column1
                    BillingMethod
                        show up to 10 characters
                column2
                    visible when (BillingMethod.CostPlus)
                        MarkupPercent
                    visible when (BillingMethod.TimeAndMaterials)
                        MarkupPercent
                    visible when (BillingMethod.RateTable)
                        MarkupPercent
                column3
                    visible when (BillingMethod.RateTable)
                        BillingRateTable
                            show up to 15 characters
                column4
                    BillingMaximum
            single column
                TaxExempt
            paragraph
                ViewTaxCodeOrTaxLocation
                    label is "TaxCode_orTaxLocation"
                    display as horizontal radio buttons
                    when value changed
                        BuyerTaxCode =  blank
                            when (ViewTaxCodeOrTaxLocation.TaxLocation)
                        BuyerTaxLocation =  blank
                            when (ViewTaxCodeOrTaxLocation.TaxCode)
                visible when (ViewTaxCodeOrTaxLocation.TaxCode)
                    BuyerTaxCode
                    BuyerTaxCode.Description
                        no label
                        display as text
                visible when (ViewTaxCodeOrTaxLocation.TaxLocation)
                    BuyerTaxLocation
                    BuyerTaxLocation.Description
                        no label
                        display as text
                    BuyerTaxLocation.AddressCode
                        display as text
            single column
                FeesExempt
                RevenueCodeBlockOption
                RevenuePartialAccount
                    compact format
                RevenueFullAccount
                    compact format
        section of LaborDistribution
            single column
                PreAwardAssignmentDays
                FinanceCodeBlock
                    label is "LaborDistributionFinanceStructure"
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                FinanceCodeBlockSetBlanks
                    no label
                FringeBurden
            two column
                column1
                    BurdenCode
                column2
                    paragraph
                        BurdenCode.Description
                            no label
                            display as text
                        BurdenCode.Rate
                            display as text
            single column
                BurdenCodeBlock
                    label is "FringeBurdenFinanceStructure"
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                BurdenCodeBlockSetBlanks
                    no label
                CertificationRequired
        section of SalaryCap
            single column
                paragraph
                    SalaryCap
                        show up to 10 characters
                    SalaryCap.Description
                        no label
                        display as text
                    SalaryCapDate
                        show up to 15 characters
            single column
                OverageCodeBlock
                    label is "SalaryCapOverageFinanceStructure"
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                OverageCodeBlockSetBlanks
                    no label
        section of Comments
            single column
                NewSubject
                    label is "Subject"
                NewComment
                    label is "Comment"
                    use text area of 3 lines
                NewFrom
                    label is "CommentMadeBy"
                    display as text
                NewCommentDate
                    label is "Date"
                NewDocumentURL
                    label is "DocumentURL"
            paragraph
                NewAttachment.File
                    label is "Attachment"
