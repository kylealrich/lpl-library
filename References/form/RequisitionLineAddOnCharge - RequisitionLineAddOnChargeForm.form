RequisitionLineAddOnChargeForm is a Form
    is primary
    propagate as a drill
    title is "RequisitionLineAddOnCharge"
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is save and new
            label is "_"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        Requisition.Requisition
                            label is "Requisition"
                        RequisitionLine
                            label is "Line"
                        Requisition.Requester.Employee.DerivedEmployeeIDName
                            label is "Requester"
                column2
                    paragraph
                        RequisitionLine.Item
                        RequisitionLine.Description
                column3
                    RequisitionLine.DerivedStatusMessage
                        label is "LineStatus"
        three column distributed
            column1
                paragraph
                    AddOnCharge
                    AddOnCharge.Description
                        no label
                        display as text
            column2
                ZeroCost
                    when value changed
                        TotalAddOnChargeAmount =  blank
        three column distributed
            column1
                AddOnChargePercent
                    label is "Rate"
                    when value changed
                        TotalAddOnChargeAmount =  blank
            column2
                EnteredUnitCost
                    label is "UnitCost"
            column3
                TotalAddOnChargeAmount
                    label is "TotalAddOnCost"
        header2 of "ProcessFlags"
        three column distributed
            column1
                paragraph
                    visible when (false)
                        TransientTaxEntity
                    Taxable
                    visible when (Taxable)
                        visible when (not IsAllowanceAddOnCharge)
                            TaxCode
                                label is "Add-OnCostTax"
                                select is TaxCodesForEntity
                        visible when (IsAllowanceAddOnCharge)
                            TaxCode
                                label is "Add-OnCostTax"
                                display as text
                        TaxCode.TaxCodeAccountsRel.AccruedOrInvoiced
                            label is "Accrual"
                            display as text
                ProductTaxCategory
            column2
                Summarize
                    label is "Summary"
                LandedAddOnCharge
                    label is "Landed"
                    display as text
            column3
                paragraph
                    PrintOnRequisition
        header2 of "VendorInformation"
        three column distributed
            column1
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
            column2
                paragraph
                    PurchaseFromLocation
                    PurchaseFromLocation.VendorLocation.VendorName
                        no label
                        display as text
            column3
                Currency
        visible when (not AddOnCharge.LandedAddOnCharge)
            single column
                Account
                    label is "Account"
                    compact format
                paragraph
                    TransientAssetInformation.AssetTemplate
                        label is "Template"
                    TransientAssetInformation.Asset
                        label is "Asset"
