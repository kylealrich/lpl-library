MobilePurchaseOrderLineDashboardContext is a Form
    title is "PurchaseOrderLineDetails"
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        single column
            PurchaseOrder
                display as text
            LineNumber
                display as text
        paragraph
            visible when (OriginalItemExists)
                paragraph
                    Item
                        display as text
                paragraph
                    visible when (ItemExists)
                        Item.Description
                            label is "Description"
                            display as text
                    visible when (not ItemExists)
                        Description
                            label is "Description"
                            display as text
                OriginalItem
                    label is "OriginalItem"
                        italics
                    display only
                OriginalItemRel.Description
                    label is "OriginalItemDescription"
                        italics
            visible when (not OriginalItemExists)
                Item
                    display as text
                visible when (ItemExists)
                    Item.Description
                        no label
                        display as text
                visible when (not ItemExists)
                    Description
                        no label
                        display as text
        paragraph
            VendorItem
                display as text
            VendorItem.VendorItemDescription
                no label
                display as text
        paragraph
            ShipToLocation
                display as text
            ShipToLocation.NameForPurchaseOrder
                no label
                display as text
        single column
            EarlyDeliveryDate
                label is "DeliveryDate"
                display as text
        paragraph
            Quantity
                label is "OrderedQuantity"
                display as text
            EnteredBuyUOM
                no label
                display as text
        single column
            VendorBuyUnitCost
                label is "UnitCost"
                display as text
        single column
            DerivedStatus
                label is "LineStatus"
                display as text
        single column
            visible when (Item.UseLinkedImage)
                Item.ImageURL
                    display as image
            visible when (not Item.UseLinkedImage)
                Item.Picture.File
                    display as full image up to 5 lines
                        missing image is random background
                            foreground text is "<Item.ItemDescriptionAbbreviation>"
