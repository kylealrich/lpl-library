CustomerBillOfExchangeCancellationContextForm is a Form
    Actions
        action is Created.Cancel
            action icon is reject
            hide when invalid
        action is Accepted.Cancel
            action icon is approve
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    Layout
        display as text
            two column distributed
                column1
                    paragraph
                        RepresentativeText
                            display as text
                    paragraph
                        CustomerRepresentativeText
                            display as text
                    paragraph
                        CustomerDraft
                            compact format
                    paragraph
                        TransactionAmount
                            label is "Amount"
                        OriginalCurrency
                            label is "Currency"
                column2
                    paragraph
                        DraftDate
                            label is "BillOfExchangeDate"
                    paragraph
                        CancelDate
                    paragraph
                        Status
                    paragraph
                        BankTransactionCode
                            label is "PaymentCode"
                        BankTransactionCode.Description
                            no label
                    blank line
