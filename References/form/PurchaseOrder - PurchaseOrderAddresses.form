PurchaseOrderAddresses is a Form
    Layout
        two column distributed
            column1
                header2 of "Contacts_/BillTo"
                paragraph
                    TransientContactCode.VendorContactCode
                        label is "ContactCode"
                    TransientContactCode.ContactLevel
                        label is "ContactLevel"
                PurchaseOrderBillToName
                    label is "BillToName"
                PurchaseOrderBillToContact
                    label is "ContactName"
                PurchaseOrderBillToPhoneNumber
                PurchaseOrderBillToEmailAddress
                    label is "Email"
                PurchaseOrderBillToAddress
                    form is PostalAddressShortRequired
            column2
                header2 of "DropshipReceiving_/AlternateShipToAddress"
                paragraph
                    visible when (false)
                        ShipToLocation
                            when value changed
                                TransientReceivingOptions =  ShipToLocation.DefaultDropshipPurchaseOrder
                                TransientDropShipToInventoryLocationAddress =  ShipToLocation.DefaultDropshipPurchaseOrder
                        Dropship
                            when value changed
                                refresh DropshipNameRequired
                                refresh DropshipAddressRequired
                    TransientDropShipToInventoryLocationAddress
                        label is "DefaultShipToLocationAddress"
                        when value changed
                            DropshipName =  ShipToLocation.NameForPurchaseOrder
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.Country =  ShipToLocation.PostalAddressForPurchaseOrder.Country
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.DeliveryAddress.AddressLine1 =  ShipToLocation.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine1
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.DeliveryAddress.AddressLine2 =  ShipToLocation.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine2
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.DeliveryAddress.AddressLine3 =  ShipToLocation.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine3
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.DeliveryAddress.AddressLine4 =  ShipToLocation.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine4
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.Municipality =  ShipToLocation.PostalAddressForPurchaseOrder.Municipality
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.StateProvince =  ShipToLocation.PostalAddressForPurchaseOrder.StateProvince
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.PostalCode =  ShipToLocation.PostalAddressForPurchaseOrder.PostalCode
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.County =  ShipToLocation.PostalAddressForPurchaseOrder.County
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.Region =  ShipToLocation.PostalAddressForPurchaseOrder.Region
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.NationalIDNumber =  ShipToLocation.PostalAddressForPurchaseOrder.NationalIDNumber
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.StateProvinceIDNumber =  ShipToLocation.PostalAddressForPurchaseOrder.StateProvinceIDNumber
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.LocaleIDNumber =  ShipToLocation.PostalAddressForPurchaseOrder.LocaleIDNumber
                                when (TransientDropShipToInventoryLocationAddress)
                            DropshipAddress.IndividualIDNumber =  ShipToLocation.PostalAddressForPurchaseOrder.IndividualIDNumber
                                when (TransientDropShipToInventoryLocationAddress)
                    TransientReceivingOptions
                        when value changed
                            Dropship =  false
                                when (TransientReceivingOptions.ReceivingRequired)
                            Dropship =  true
                                when (TransientReceivingOptions.ReceivingNotAllowed)
                DropshipName
                    label is "Name"
                    display as required when (DropshipNameRequired)
                    when value changed
                        refresh DropshipAddressRequired
                DropshipContact
                    label is "Contact"
                DropshipPhoneNumber
                visible when (DropshipAddressRequired)
                    DropshipAddress
                        form is PostalAddressShortRequired
                visible when (not DropshipAddressRequired)
                    DropshipAddress
                        form is PostalAddressShortNotRequired
