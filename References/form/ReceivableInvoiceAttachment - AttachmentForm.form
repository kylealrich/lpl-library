AttachmentForm is a Form
    is primary
    title is "ReceivableInvoiceAttachment"
    Layout
        paragraph
            ReceivableInvoice
                display as text
        single column
            ReceivableInvoiceAttachment
                label is "AttachmentNumber"
                display as text
        two column
            column1
                paragraph
                    visible when (HasAttachment)
                        Attachment.Title
                    Attachment.File
                        label is "Attachment"
                    visible when (HasAttachment)
                        button of "View"
                            view Attachment.File
                            display as link
            column2
                visible when (ShowSendToCustomer)
                    SendToCustomer
        paragraph
            Comment
