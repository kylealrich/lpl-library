CustomerRecurringInvoiceTemplateLineContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                column2
                    Customer.RepresentativeText
                        label is "Customer"
                column3
                    CustomerRecurringInvoiceTemplate.ReceivableInvoiceType
                        label is "Type"
                column4
                    RecurringInvoiceTemplate.RecurringInvoiceTemplate
                        label is "InvoiceTemplate"
            visible when (CustomerRecurringInvoiceTemplateLine entered)
                four column distributed
                    column1
                        CustomerRecurringInvoiceTemplateLine
                            label is "Line"
                    column2
                        ExtendedAmount
                            label is "ExtendedAmount"
