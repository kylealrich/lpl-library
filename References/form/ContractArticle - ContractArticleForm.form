ContractArticleForm is a Form
    title is "ContractArticle"
    Layout
        three column
            ContractArticle
                display as text
            Title
                label is "ArticleTitle"
            Article
                display as text
        visible when (ContractArticleExists)
            visible when (AllowUpdateWithoutApproval)
                single column
                    HeaderText
                    DisplayOrder
                        display as text
                    visible when (Modified)
                        text of "ArticleModifiedFromOriginalState"
                            italics
                    visible when (not Modified)
                        visible when (ContractArticleExists)
                            text of "ArticleNotModified"
                                italics
                    visible when (EligibleForSourcing)
                        SSArticle
                            label is "SendArticleToSourcing"
                    Active
            visible when (not AllowUpdateWithoutApproval)
                single column
                    HeaderText
                        display as text
                    DisplayOrder
                        display as text
                    visible when (AllowUpdate)
                        visible when (Modified)
                            text of "ArticleModifiedFromOriginalState"
                                italics
                        visible when (not Modified)
                            visible when (ContractArticleExists)
                                text of "ArticleNotModified"
                                    italics
                    visible when (EligibleForSourcing)
                        SSArticle
                            label is "SendArticleToSourcing"
                            display as text
                    Active
        visible when (not ContractArticleExists)
            single column
                HeaderText
                visible when (EligibleForSourcing)
                    SSArticle
                        label is "SendArticleToSourcing"
                Active
