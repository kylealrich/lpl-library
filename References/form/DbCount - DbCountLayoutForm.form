DbCountLayoutForm is a Form
    is primary
    title is "CountRows_inBusinessClasses"
    Layout
        WorkDirectory
        BusinessClassSelection
        header3 of "Options"
        visible when (not BusinessClassSelection.IncludeItems.BusinessClass)
            single column
                ShowTotals
                ShowOnlyFilesWithNonZeroCounts
        visible when (BusinessClassSelection.IncludeItems.BusinessClass)
            single column
                BusinessClassSelection.SetName
                    select is BusinessSetList
                FilterString
