MobileContractAttachedContactForm is a Form
    title is "Contact"
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            single column
                DerivedName
            two column
                column1 of 50%
                    DerivedPhone
                column2 of 50%
                    single column
                        visible when (DerivedPhone entered)
                            button of icon.phone
                                link is "tel:<DerivedPhone>"
            two column
                column1 of 50%
                    DerivedEmail
                column2 of 50%
                    single column
                        visible when (DerivedEmail entered)
                            button of icon.mail
                                link is "mailto:<DerivedEmail>"
            single column
                Address.DisplayAddressCommaSeparated
                    label is "StreetAddress"
                ContactType
        single column
            PrimaryContact
            SecondaryContact
            text of "SecondaryContactsWillReceiveAllEmailsThatAreSentToPrimaryContact"
                italics
