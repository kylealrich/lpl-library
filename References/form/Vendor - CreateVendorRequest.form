CreateVendorRequest is an ActionForm
    action is RequestNewVendor
    title is "RequestNewVendor"
    Layout
        section of Main
            visible when (actor.initiator)
                header4 of "This_request_will_be_routed_for_approval;_after_approval_the_Vendor_will_be_created."
            visible when (not actor.initiator)
                display as text
                    two column
                        column1 of 50%
                            RequestedBy
                            button of "<RequesterEmail>"
                                link is "mailto:<RequesterEmail>"
                                label is "Email"
                                display as link
                            NeededBy
                                raise red alert when (NeededByRedBoolean)
                                    mouse over text is "Overdue"
                                raise yellow alert when (NeededByYellowBoolean)
                                    mouse over text is "Needed_\\Today"
                                raise blue alert when (NeededByGreenBoolean)
                                    mouse over text is "Due_\\Within_<NoOfDays>_\\Days"
                        column2 of 50%
                            RequesterActor
                                label is "ID"
                            button of "<RequesterPhone.SubscriberNumber>"
                                link is "tel:<RequesterPhone.SubscriberNumber>"
                                label is "Phone"
                                display as link
                            RequestPriority
                                label is "Priority"
                                display as tag
                                    color of red when (RequestPriority.High)
                                    color of yellow when (RequestPriority.Medium)
                                    color of green when (RequestPriority.Low)
            visible when (not actor.initiator)
                two column
                    column1 of 50%
                        paragraph
                            VendorGroup
                                show up to 4 characters
                            VendorGroup.Description
                                no label
                                display as text
                    column2 of 50%
                        paragraph
                            VendorClass
                            VendorClass.Description
                                no label
                                display as text
            visible when (actor.initiator)
                paragraph distributed
                    NeededBy
                    RequestPriority
                        label is "Priority"
            visible when (actor.initiator)
                two column
                    column1 of 50%
                        VendorName
                        LegalName
                    column2 of 50%
                        VendorSearchName
                            label is "SearchName"
            visible when (not actor.initiator)
                two column
                    column1 of 50%
                        VendorName
                            show up to 20 characters
                    column2 of 50%
                        VendorSearchName
                            label is "SearchName"
                            show up to 20 characters
                two column
                    column1 of 50%
                        LegalName
                            show up to 20 characters
                    column2 of 50%
            three column
                column1 of 50%
                    Notes
                column2 of 25%
                    TaxIDType
                    VATRegistrationCountry
                        label is "V\\A\\TCountry/\\Jurisdiction"
                        display as required when (VATRegistrationNumber entered)
                column3 of 25%
                    TaxID
                        label is "TaxID"
                        show up to 10 characters
                    VATRegistrationNumber
                        label is "V\\A\\TNumber"
                        show up to 10 characters
            two column table
                column1
                    Logo.File
                        label is "Logo"
                    URLAddress
                column2
                    TransientAttachment.File
                        label is "Attachment"
                    TransientAttachmentDescription
        section of Contact
            single column
                ContactName
                    label is "ContactName"
                    show up to 20 characters
            single column
                EmailAddress
                    label is "Email"
            header3 of "Phone"
            paragraph
                PhoneNumber.InternationalPrefix
                    label is "Country/\\JurisdictionCode"
                    show up to 4 characters
                PhoneNumber.SubscriberNumber
                    label is "Number"
                    show up to 10 characters
                PhoneNumber.Extension
                    show up to 4 characters
            header3 of "Mobile"
            paragraph
                MobileNumber.MobilePhoneNumber.InternationalPrefix
                    label is "Country/\\JurisdictionCode"
                MobileNumber.MobilePhoneNumber.SubscriberNumber
                    label is "Number"
                MobileNumber.SmsEnabled
            header3 of "Fax"
            paragraph
                FaxNumber.InternationalPrefix
                    label is "Country/\\JurisdictionCode"
                    show up to 4 characters
                FaxNumber.SubscriberNumber
                    label is "Number"
                    show up to 10 characters
                FaxNumber.Extension
                    show up to 4 characters
        section of Address
            header3 of "Address"
            VendorAddress
                form is PostalAddressShortRequired
        section of Comments
            three column
                column1
                    PrintCode
                    Title
                column2
                    DateRange.Begin
                        label is "BeginDate"
                    DateRange.End
                        label is "EndDate"
                column3
                    paragraph
                        TransPayablesCompany
                            label is "Company"
                        TransPayablesCompany.Company.Name
                            no label
                            display as text
            single column
                CommentText
                    label is "Comment"
                    use text area of 12 lines
        section of VendorLocation
            two column
                column1 of 50%
                    TransientVendorLocation
                        label is "VendorLocation"
                    TransientLocationStatus
                        label is "Status"
                    TransientVendorAccount
                        label is "VendorAccount"
                    TransientVATRegistrationCountry
                        label is "V\\A\\TRegistrationCountry/\\Jurisdiction"
                    TransientVATRegistrationNumber
                        label is "VATRegistrationNumber"
                    TransientInvoiceCurrency
                        label is "InvoiceCurrency"
                column2 of 50%
                    TransientVendorLocationName
                        label is "VendorLocationName"
                    TransientVendorLocationType
                        label is "VendorLocationType"
                    TransientNormalRemitToLocation
                        label is "NormalRemitToLocation"
                    TransientNormalPurchaseFromLocation
                        label is "NormalPurchaseFromLocation"
                    TransientLocationAttachment.File
                        label is "Attachment"
                    TransientLocationAttachmentDescription
                        label is "AttachmentDescription"
            header2 of "CurrentAddress"
            visible when (not RecordExists)
                TransientUseVendorAddress
                    label is "UseVendorAddress"
                visible when (not TransientUseVendorAddress)
                    TransientVendorLocationAddress
            header2 of "PrimaryContact"
            visible when (not RecordExists)
                two column
                    column1
                        TransientContactName
                            label is "ContactName"
                        TransientPhoneNumber
                            label is "PhoneNumber"
                        TransientMobileNumber
                            label is "MobileNumber"
                        TransientFaxNumber
                            label is "FaxNumber"
                        TransientEmailAddress
                            label is "EmailAddress"
                    column2
                        TransientTwitterID
                            label is "TwitterID"
                        TransientSocialNetworkID2
                            label is "SocialNetworkID2"
                        TransientSocialNetworkID3
                            label is "SocialNetworkID3"
                        TransientSocialNetworkID4
                            label is "SocialNetworkID4"
                        TransientSocialNetworkID5
                            label is "SocialNetworkID5"
