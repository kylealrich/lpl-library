InvoicedCustomer is a Form
    Layout
        paragraph
            TransientInvoiceCustomer.Company
                select is Company.CustomerGroupField.CustomerGroup.ReceivableCompany set.ReceivableCompanyList
            TransientInvoiceCustomer.Company.Name
                no label
                display as text
            visible when (TransientInvoiceCustomer.Company not entered)
                TransientInvoiceCustomer.Customer
                    label is "InvoicedCustomer"
                    select is CustomerContextCompanyCustomerSelectList
            visible when (TransientInvoiceCustomer.Company entered)
                TransientInvoiceCustomer.Customer
                    label is "InvoicedCustomer"
                    select is TransientInvoiceCustomer.Company.CustomerGroupField.CustomerGroup.Customer set.CustomerContextCompanySelectList
            TransientInvoiceCustomer.Customer.Name
                no label
                display as text
