SendCorrespondence is an ActionForm
    action is SendCorrespondence
    title is "SendCorrespondence"
    Layout
        paragraph
            To
            visible when (To.InternalContact)
                paragraph
                    ToCorrespondenceEmail.ToFinanceResource
                        no label
                    ToCorrespondenceEmail.ToFinanceResource.PreferredSimplePresentationName
                        no label
                        display as text
                    ToCorrespondenceEmail.ToFinanceResource.EmailAddress
                        no label
                        display as text
            visible when (To.InstitutionContact)
                paragraph
                    ToCorrespondenceEmail.ToInstitutionContact
                        no label
                        select is FinancialInstitutionBranchContactSelectList
                    ToCorrespondenceEmail.ToInstitutionContact.ContactInformation.PersonName.FirstAndLastName
                        no label
                        display as text
                    ToCorrespondenceEmail.ToInstitutionContact.ContactInformation.ContactInfo.EmailAddress
                        no label
                        display as text
            visible when (To.Email)
                single column
                    ToCorrespondenceEmail.ToEmail
                        no label
        blank line
        single column
            FromEmail
                display as text
            Subject
            Content
        paragraph
            Attachment.File
