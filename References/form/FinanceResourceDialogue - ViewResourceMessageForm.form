ViewResourceMessageForm is a Form
    title is "MessageDetails"
    Actions
        action is Reply
        action is Purge
            action icon is delete
            label is "_"
            hide when invalid
    Layout
        blank line
        single column
            DialogueTitle
                label is "Subject"
                display as text
            Author.DialogueResource.PreferredSimplePresentationName
                label is "From"
                display as text
            create stamp
                label is "SentOn"
                display as text
        blank line
        single column
            Dialogue
                label is "Message"
                display as text
            blank line
            ResponseRequired
                display as text
            Replied
                display as text
            blank line
            button of "<DialogueAttachment.Title>"
                visible when (HasAttachment)
                view DialogueAttachment.File
                display as link
            button of "<DialogueLink>"
                visible when (HasLink)
                link is external "<DialogueLink>"
                display as link
