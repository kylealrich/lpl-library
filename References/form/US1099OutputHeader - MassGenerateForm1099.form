MassGenerateForm1099 is an ActionForm
    action is MassGenerateForm1099
    Layout
        paragraph
            DerivedReportYear
                label is "ReportYear"
                display as text
        header3 of "Generation"
        paragraph
            GenerateCopyA
        paragraph
            GenerateCopyB
        visible when (GenerateCopyB)
            single column
                paragraph
                    CopyBIndividualCopies
                        indent
                    visible when (ValidForCopyBWithCopy2)
                        visible when (CopyBIndividualCopies)
                            IndividualCopyBFormat
                                no label
                paragraph
                    CopyBConsolidatedCopy
                        indent
                    visible when (ValidForCopyBWithCopy2)
                        visible when (CopyBConsolidatedCopy)
                            ConsolidatedCopyBOption
                                no label
        paragraph
            GenerateCopyC
        blank line
        header3 of "PrintOptions"
        visible when (GenerateCopyA)
            paragraph
                PrintCopyA
                visible when (PrintCopyA)
                    CopyAPrinter
                        select is ActiveIDMPrinter
                    CopyAPrinter.Description
                        no label
                        display as text
        visible when (GenerateCopyB)
            paragraph
                PrintCopyB
                visible when (PrintCopyB)
                    CopyBPrinter
                        select is ActiveIDMPrinter
                    CopyBPrinter.Description
                        no label
                        display as text
            visible when (PrintCopyB)
                paragraph
                    CopyBPrintOption
                        no label
                        indent
                        display as horizontal radio buttons
        visible when (GenerateCopyC)
            paragraph
                PrintCopyC
                visible when (PrintCopyC)
                    CopyCPrinter
                        select is ActiveIDMPrinter
                    CopyCPrinter.Description
                        no label
                        display as text
        blank line
        header3 of "EmailOptions"
        visible when (GenerateCopyB)
            visible when (CopyBIndividualCopies)
                paragraph
                    EmailCopyBToVendors
                    visible when (NoVendorEmailAddress)
                        text of "Warning:_Some_\\VendorsDon'tHaveEmailAddress" with icon.yellowAlert
                            bold
        visible when (GenerateCopyC)
            paragraph
                EmailCopyCToPayer
                visible when (NoPayerEmailAddress)
                    text of "Warning:_Missing_\\PayerEmailAddress" with icon.yellowAlert
                        bold
