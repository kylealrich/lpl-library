BuyerMessageReceivingContext is a Form
    Layout
        four column distributed
            display as text
                column1
                    Company.DerivedCompanyIDName
                        label is "Company"
                    paragraph
                        PurchaseOrderReceipt
                            label is "Receipt"
                        PurchaseOrderReceiptLine.PurchaseOrderLine.LineNumber
                            label is "Line"
                    DocumentNumberNumeric
                        label is "AdjustmentDocumentNumber"
                    paragraph
                        PurchaseOrderReceiptLine.MatchDetailKey
                            label is "ItemDetail"
                        PurchaseOrderReceiptLine.ItemType
                            label is "ItemType"
                column2
                    visible when (BuyerEntered)
                        Buyer.Employee.FirstLastName
                            label is "Buyer"
                    visible when (not BuyerEntered)
                        Buyer
                            label is "Buyer"
                    PurchaseOrder
                    PurchaseOrder.Vendor.DerivedVendorNameID
                        label is "P\\OVendor"
                    visible when (SubstituteItemMessage)
                        ItemSubstitution
                            no label
                    visible when (PurchaseOrderReceiptLineItemEntered)
                        PurchaseOrderReceiptLine.Item.ItemCardViewDisplay2
                            label is "Item"
                    visible when (not PurchaseOrderReceiptLineItemEntered)
                        PurchaseOrderReceiptLine.Item
                            label is "Item"
                column3
                    visible when (PurchaseOrderPurchaseFromLocationEntered)
                        PurchaseOrder.DerivedPurchaseFromLocationRepresentativeText
                            label is "PurchaseFrom"
                    visible when (not PurchaseOrderPurchaseFromLocationEntered)
                        PurchaseOrder.PurchaseFromLocation
                            label is "PurchaseFrom"
                    paragraph
                        TransientUnitCost
                        visible when (VendorUnitCostMessage)
                            NoVendorCost
                                no label
                    PurchaseOrderReceipt.ReceivedDate
                        label is "ReceivedDate"
                    visible when (PurchaseOrderReceiptLineShipToLocationEntered)
                        PurchaseOrderReceiptLine.ShipToLocation.DerivedNameID
                            label is "ReceivingLocation"
                    visible when (not PurchaseOrderReceiptLineShipToLocationEntered)
                        PurchaseOrderReceiptLine.ShipToLocation
                            label is "ReceivingLocation"
                column4
                    Status
                    PurchaseOrderBuyerMessage.MessageDate
                        label is "MessageDateAndTime"
                    visible when (OverreceivingMessage)
                        OverreceivedQuantity
                            no label
