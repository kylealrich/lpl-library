MatchMessageContextV2 is a Form
    title is "InvoiceMessage"
    Layout
        display as text
            four column distributed
                column1
                    Company.PayablesCompany.CompanyDisplay
                        label is "Company"
                    button of "<PayablesInvoice.Invoice>"
                        link is PayablesInvoiceDetails
                        label is "Invoice"
                        display as link
                    paragraph
                        visible when (BuyerOwner entered)
                            BuyerOwner.Employee.DerivedEmployeeIDName
                                label is "MessageOwner"
                        visible when (AuthorityCode entered)
                            AuthorityCode.PayablesAuthorityCode
                                label is "AuthorityCode"
                        visible when (MessageNotClosed)
                            button of "Forward"
                                action is Forward
                column2
                    Vendor.DerivedVendorNameID
                        label is "Vendor"
                    paragraph
                        visible when (not PayablesInvoice.MatchProcessType.ServiceContract)
                            button of "<PurchaseOrder>"
                                link is PurchaseOrderDetails
                                label is "P\\ONumber"
                                display as link
                        visible when (PayablesInvoice.MatchProcessType.ServiceContract)
                            button of "<Contract>"
                                link is ContractNav
                                label is "Contract"
                                display as link
                    Buyer.Employee.DerivedEmployeeIDName
                        label is "POBuyer"
                    visible when (Operator entered)
                        Operator
                column3
                    Status
                    create stamp
                        label is "DateAndTime"
                    paragraph
                        visible when (PayablesInvoice.MatchProcessType.ServiceContract)
                            RepresentativeTextServiceContract
                        visible when (not PayablesInvoice.MatchProcessType.ServiceContract)
                            RepresentativeTextPurchaseOrder
                    visible when (PayablesInvoiceDetail.ItemGTIN entered)
                        PayablesInvoiceDetail.ItemGTIN
                            label is "GTIN"
                column4
                    paragraph
                        MatchMessageOrigin
                            label is "Origin"
                            display as tag
                                color of orange
                        DerivedMessageType
                            label is "Type"
                            display as tag
                                color of orange
                    DerivedMessageSubType
                        label is "SubType"
                    paragraph
                        visible when (PayablesInvoiceDetail.VendorItem entered)
                            PayablesInvoiceDetail.VendorItem
                                label is "VendorItem"
                        visible when (ContractLineEntered)
                            ContractLine.ServiceCode
                                label is "ServiceCode"
