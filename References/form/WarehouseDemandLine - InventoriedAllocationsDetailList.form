InventoriedAllocationsDetailList is a Form
    Layout
        display as text
            three column distributed
                column1
                    visible when (IsCatchWeight)
                        TransactionUOM
                    visible when (not IsCatchWeight)
                        DerivedUOM
                            label is "StockUOM"
                    ItemLocation.DerivedStockOnHandQuantity
                        label is "SOH"
                    ItemLocation.DerivedOnOrderQuantity
                        label is "OnOrderQuantity"
                    ItemLocation.DerivedAllocatedQuantity
                        label is "Allocated"
                    ItemLocation.DerivedIntransitQuantity
                        label is "Intransit"
                    visible when (DemandExceedsAllocation)
                        DemandExceedsAllocationMsg
                            no label
                            color of red
                column2
                    ItemLocation.DerivedInProcessQuantity
                        label is "InProcess"
                    ItemLocation.DerivedInspectionHoldQuantity
                        label is "OnHold"
                    ItemLocation.DerivedBackorderedQuantity
                        label is "Backordered"
                    ItemLocation.DerivedAllocatableQuantity
                        label is "Allocatable"
                    ItemLocation.LeadtimeDays
                        label is "LeadTime"
                column3
                    AllocationDate
                        label is "Date"
                    WarehouseDemand.DemandSystemCode
                        label is "Source"
                    WarehouseDemand.DemandDocument
                        label is "Document"
                    paragraph
                        WarehouseDemandLine.LineNumber
                            label is "LineNumber"
                        visible when (IsCatchWeight)
                            Item.StockUOM
                                label is "StockUOM"
                        visible when (not IsCatchWeight)
                            TransactionUOM
                    Quantity
                        label is "OpenDemand"
