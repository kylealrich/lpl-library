AssetAdjustmentForm is a CompositeForm
    is primary
    title is "AssetAdjustment"
    context form is AssetAdjustmentContextForm
        background is theme color
    Main is a Panel
        visible when (IsMainAdjusted)
        form is AssetAdjustmentMain
    Items is a Panel
        visible when (AssetItemAdjustmentExists)
        list is AssetItemAdjustment set.ItemAdjustments
    Books is a Panel
        visible when (AssetBookAdjustmentExists)
        list is AssetBookAdjustment set.BookAdjustments
