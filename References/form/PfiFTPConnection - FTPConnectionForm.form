FTPConnectionForm is a Form
    title is "FileTransferConnection"
    Layout
        single column
            PfiConfiguration
            PfiConnectionProtocol.Host
            PfiConnectionProtocol.Protocol
            visible when (PfiConnectionProtocol.Protocol.Sftp)
                PfiConnectionProtocol.EnableHostKeyChecking
                visible when (PfiConnectionProtocol.EnableHostKeyChecking)
                    PfiConnectionProtocol.HostKeyPath
                PfiConnectionProtocol.AuthenticationType
            PfiConnectionProtocol.User
            visible when (PfiConnectionProtocol.Protocol.Sftp)
                visible when (PfiConnectionProtocol.AuthenticationType.UserAndPrivatekey)
                    PfiConnectionProtocol.PrivatekeyPath
                    PfiConnectionProtocol.Passphrase
                visible when (PfiConnectionProtocol.AuthenticationType.UserAndPassword)
                    PfiConnectionProtocol.SftpPassword
                visible when (PfiConnectionProtocol.AuthenticationType.UserPasswordAndPrivateKey)
                    PfiConnectionProtocol.SftpPassword
                    PfiConnectionProtocol.PrivatekeyPath
                    PfiConnectionProtocol.Passphrase
            PfiConnectionProtocol.TimeOut
            FileSystem
            visible when (FileSystem.AmazonS3)
                PfiAmazonS3.BucketName
                PfiAmazonS3.Region
                PfiAmazonS3.AccessKey
                PfiAmazonS3.SecretKey
                PfiAmazonS3.SocketTimeout
                PfiAmazonS3.ConnectionTimeout
                PfiAmazonS3.RequestTimeout
                PfiAmazonS3.RetryCount
                PfiAmazonS3.RetryWaitTime
                PfiAmazonS3.WriteStorageClass
                PfiAmazonS3.MultiPartUpload
            EnableDebugLogging
            visible when (EnableDebugLogging)
                NumberOfDays
                    when value changed
                        refresh ExpirationTimeStamp
                ActivationTimeStamp
                    when value changed
                        refresh ExpirationTimeStamp
                ExpirationTimeStamp
                    raise red alert when (IsDebugExpired)
                        mouse over text is "DebugLoggingExpired"
            PfiConnectionProtocol.TestFile
            visible when (PfiConnectionProtocol.TestFile)
                PfiConnectionProtocol.DestinationFilePath
        two column
            button of "TestConnection"
                action is TestConnection
            button of "TestConnectionWithTraceLog"
                action is TestConnectionWithTraceLog
