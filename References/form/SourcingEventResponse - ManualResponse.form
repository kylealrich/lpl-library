ManualResponse is a Form
    title is "EventResponseForEvent#<SourcingEvent.EventVersionString>"
    Layout
        two column
            NoBid
            visible when (NoBid)
                NoBidReason
                    select is NoBidReasonSelect
        visible when (SourcingEvent.RequireBidBond)
            visible when (not NoBid)
                visible when (BidBondId entered)
                    single column
                        BidBondId
                            display as text
                visible when (CanAttachPaperBidBond)
                    two column
                        visible when (PaperBidBondEntered)
                            PaperBidBond.Title
                        PaperBidBond.File
                            label is "AttachPaperBidBond"
                        visible when (PaperBidBondEntered)
                            button of "View"
                                view PaperBidBond.File
                                display as link
                single column
                    BidBondValidated
                        display as text
        visible when (ResponseExists)
            visible when (AllowedToNegotiateTerms)
                header2 of "SupplierRequestToNegotiateTermsAndConditions"
                single column
                    RequestToNegotiateTerms
                    visible when (RequestToNegotiateTerms)
                        header3 of "TermsNegotiationInformation"
                        NegotiateTermsBox
                            label is "Comment"
                        visible when (NegotiatedTermsDocumentEntered)
                            NegotiatedTermsDocument.Title
                                label is "AttachmentTitle"
                        paragraph
                            NegotiatedTermsDocument.File
                                label is "Attachment"
                            visible when (NegotiatedTermsDocumentEntered)
                                button of "View"
                                    view NegotiatedTermsDocument.File
                                    display as link
        visible when (not TechnicalProposalOnly)
            visible when (ResponseExists)
                visible when (LineResponsesExist)
                    header2 of "ResponseTotals"
                    single column
                        LinesRespondedToBySupplier
                            display as text
                        visible when (not DifferentResponseCurrency)
                            SupplierTotalBidAmount
                                display as text
                        visible when (DifferentResponseCurrency)
                            SupplierTotalBidAmount
                                label is "TotalBidAmountInEventCurrencyOf<SourcingEvent.CurrencyCode>"
                                display as text
                            SupplierTotalBidAmountInResponseCurrency
                                label is "TotalBidAmountInResponseCurrencyOf<EnteredCurrencyCode>"
                                display as text
                        visible when (SourcingEvent.UsingEstimatedTotal)
                            SourcingEvent.EstimatedTotal
                                label is "EstimatedTotalIn<SourcingEvent.CurrencyCode>"
                                display as text
