BillofExchangeInterfaceMaintenance is a Form
    is primary
    Layout
        two column distributed
            column1
                visible when (CustomerDraftImport not entered)
                    paragraph
                        Company
                            select is ARCompanies
                        Company.Name
                            no label
                            display as text
                visible when (CustomerDraftImport entered)
                    paragraph
                        RepresentativeText
                            display as text
                visible when (CustomerDraftImport not entered)
                    paragraph
                        Customer
                            label is "Customer"
                        Customer.Name
                            no label
                            display as text
                visible when (CustomerDraftImport entered)
                    paragraph
                        CustomerRepresentativeText
                            display as text
                visible when (CustomerDraftImport not entered)
                    paragraph
                        CustomerDraftImport.DraftNumber
                            label is "DraftNumber"
                        CustomerDraftImport.Suffix
                            label is "Suffix"
                visible when (CustomerDraftImport entered)
                    paragraph
                        CustomerDraftImport.DraftNumber
                            label is "DraftNumber"
                            display as text
                        CustomerDraftImport.Suffix
                            label is "Suffix"
                            display as text
                paragraph
                    Status
                        label is "StatusCode"
                paragraph
                    DraftAmount
                    Currency
                        label is "CurrencyCode"
                DraftDate
                MaturityDate
            column2
                paragraph
                    ProcessLevel
                    ProcessLevel.Name
                        no label
                        display as text
                paragraph
                    BankTransactionCode
                        label is "PaymentCode"
                    BankTransactionCode.Description
                        no label
                        display as text
                paragraph
                    BankEntity
                        label is "CustomerBank"
                    BankEntity.BankName
                        no label
                        display as text
                paragraph
                    BankAccountNumber
                        label is "CustomerBankAccount"
                    RIBKey
                paragraph
                    CurrencyRate
                        label is "CurrrencyRate"
                paragraph
                    PayerReference
                        label is "BankReferenceNumber"
                paragraph
                    XrefNbr
                        label is "TransferNumber"
