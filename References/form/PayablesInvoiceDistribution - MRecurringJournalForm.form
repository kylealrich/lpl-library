MRecurringJournalForm is a Form
    title is "RecurringJournalInterface"
    Layout
        header2 of "SourceStructure"
        single column
            GLFinanceCodeBlock
                no label
                display only
                compact format
            GLFinanceCodeBlock.GeneralLedgerChartAccount.AccountDescription
                display as text
        header2 of "RecurringJournalControl"
        visible when (not RecurringJournalExists)
            two column distributed
                RecurringJournalType
                    label is "Recurring"
                RecurringDescription
                    label is "Description"
            two column distributed
                RecurringGeneralLedgerEvent
                    label is "RecurringGlobalLedgerEvent"
                RecurringReference
                    label is "Reference"
            two column distributed
                RecurringBeginningYear
                    label is "BeginningYear"
                    display as text
                RecurringBeginningPeriod
                    label is "BeginningPeriod"
                    compact format
            two column distributed
                RecurringEndYear
                    label is "EndYear"
                    display as text
                RecurringEndPeriod
                    label is "EndPeriod"
                    compact format
            two column distributed
                RecurringPostingDay
                    label is "PostingDay"
                RecurringTransactionDay
                    label is "TransactionDay"
        visible when (RecurringJournalExists)
            display as text
                two column distributed
                    column1
                        RecurringJournalType
                            label is "Recurring"
                        RecurringJournalControl
                    column2
                        RecurringDescription
                            label is "Description"
                        RecurringReference
                            label is "Reference"
            display as text
                two column distributed
                    column1
                        RecurringBeginningYear
                            label is "BeginningYear"
                        RecurringEndYear
                            label is "EndYear"
                        RecurringPostingDay
                            label is "PostingDay"
                    column2
                        RecurringBeginningPeriod
                            label is "BeginningPeriod"
                        RecurringEndPeriod
                            label is "EndPeriod"
                        RecurringTransactionDay
                            label is "TransactionDay"
        header2 of "RecurringJournalTransaction"
        single column
            RecurringToCodeBlock
                label is "ToFinanceStructure"
                compact format
            RecurringToCodeBlock.GeneralLedgerChartAccount.AccountDescription
                display as text
        single column
            RecurringTransactionAmount
            RecurringUnitsAmount
        header2 of "Totals"
        single column
            GLTransactionAmount
                label is "TransactionAmount"
                display as text
            TotalJournalBridgeAmount
                label is "TotalOfCreatedRecurringTransactionLines"
                display as text
            BalanceBridgeAmount
                label is "RemainingTransactionAmount"
                display as text
