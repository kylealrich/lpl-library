RequestUpdateCustomer is an ActionForm
    action is RequestUpdateCustomer
    title is "RequestUpdateCustomer"
    Layout
        visible when (actor.initiator)
            header4 of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_updated"
        visible when (not actor.initiator)
            three column
                RequestedBy
                    display only
                RequesterActor
                    label is "ID"
                    display only
                RequesterPhone
                    label is "PhoneNumber"
                    display only
                    compact format
            paragraph
                RequesterEmail
                    label is "Email"
                    display only
                button of "SendEmail"
                    link is "mailto:<RequesterEmail>"
            blank line
        paragraph
            RequestPriority
            NeededBy
        two column
            column1
                Logo.File
                    no label
                    align as label
                    display as full image up to 5 lines
                        missing image is missingpicture96px
            column2
                paragraph
                    CustomerGroup
                    CustomerGroup.Name
                        no label
                        display as text
                    CustomerGroup.Currency
                        no label
                        display as text
                paragraph
                    Customer
                        display as text
                    Name
                        label is "Name"
                paragraph
                    CustomerReference
                paragraph
                    PrmLegalName
                        label is "LegalName"
                paragraph
                    PrmSearchName
                        label is "SearchName"
                blank line
        header4 of "ActionComment"
        single column
            action comment
                no label
                use text area
        header3 of "Customer"
        three column
            CreditAgencyCode
            CreditAgencyDate
            CreditAgencyNumber
        three column
            PrmReceivableHoldCode
                label is "HoldCode"
            PrmTaxID
                label is "TaxID"
            CustomerOrderAddressOverride
                label is "OrderEntryAddressOverride"
        paragraph
            VATRegistrationCountry
                label is "V\\A\\TRegistrationCountry/\\Jurisdiction\\,Number"
            VATRegistrationNumber
                no label
        blank line
        paragraph
            CreditLimit
        paragraph
            OrderLimit
            OpenOrderAmount
                label is "OpenOrders"
                display as text
        paragraph
            visible when (BillOfExchangeProcessing)
                CurrentBillOfExchangeBalance
                    label is "CurrentBillOfExchangeBalance"
                    display only
        paragraph
            PrmPostalAddress
                label is "PostalAddress"
        paragraph
            PrmVendorGroupAndVendor.VendorGroup
            PrmVendorGroupAndVendor.VendorGroup.Description
                label is "VendorGeroup"
                display as text
        paragraph
            PrmVendorGroupAndVendor.Vendor
            PrmVendorGroupAndVendor.Vendor.VendorName
                label is "Vendor"
                display as text
        blank line
        paragraph
            visible when (not HasCompanyCustomerAndNoVendorBalance)
                button of "NetBalance"
                    link is NetBalances
                    display as link
            visible when (not HasCompanyCustomerAndNoVendorBalance)
                button of "NetBalance"
                    link is NetBalancesFromVendor
                    display as link
        header3 of "ContactInformation"
        two column distributed
            column1 of 70%
                paragraph
                    PrmContact
                        label is "Contact"
                    ContactTitle
                paragraph
                    PhoneNumber
                paragraph
                    MobileNumber.MobilePhoneNumber.InternationalPrefix
                        label is "MobileCountry/\\JurisdictionCode"
                    MobileNumber.MobilePhoneNumber.SubscriberNumber
                        label is "MobileNumber"
                    MobileNumber.SmsEnabled
                        label is "SmsEnabled"
                paragraph
                    FaxNumber.InternationalPrefix
                        label is "FaxCountry/\\JurisdictionCode"
                    FaxNumber.SubscriberNumber
                        label is "FaxNumber"
                    FaxNumber.Extension
                        label is "Extension"
                paragraph
                    PrmEmailAddress
                        label is "EmailAddress"
                paragraph
                    URLAddress
            column2 of 30%
                TwitterID
                SocialNetworkID2
                SocialNetworkID3
                SocialNetworkID4
                SocialNetworkID5
