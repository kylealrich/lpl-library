UpdateSupplierInformation is a Form
    title is "Profile_for<SupplierName>"
    disable field options
    called out actions only
    restrict action UpdateBankCountry
    Actions
        action is save and close
            action icon is save
        action is refresh
            label is "_"
    Layout
        three column
            column1
                Picture.File
                    display as portrait image up to 6 lines
                        missing image is random background
                visible when (ChangeTaxID)
                    TaxIdGroup.TaxId
                visible when (not ChangeTaxID)
                    ChangeTaxID
                VATRegistrationNumber
            column2
                SupplierName
                BusinessType
                paragraph
                    TaxIdGroup.TaxIdType
                    TaxIdGroup.TaxIdType.Description
                        no label
                        display as text
                VATRegistrationCountry
            column3
                WebAddress
                    label is "Website"
                DoingBusinessAs
                    show up to 30 characters
                paragraph
                    TaxCertification.File
                        label is "<TaxCertificationLabel>"
                    visible when (TaxCertificationExists)
                        button of "View"
                            view TaxCertification.File
                            display as link
                visible when (SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                    GlobalLocationNumber
                DandBNbr
                    label is "Dun&Bradstreet"
        single column
            SupplierDescription
                use text area of 2 lines
        header2 of "_"
        two column distributed
            column1
                text of "Mailing_Address"
                    header2
                single column
                    MailingAddress
                        form is PostalAddressShortRequired
                    visible when (SupplierGroup.DisplayTypeForRegistration)
                        MailingAddress.Type
            column2
                text of "RemitTo_NameAnd_Address"
                    header2
                single column
                    SameAsAddressAbove
                        label is "CheckIfRemitToAddressIs_theSame_asMailingAddress"
                paragraph
                    BillingFirstName
                        label is "RemitToFirstName"
                    BillingLastName
                        label is "RemitToLastName"
                single column
                    visible when (not SameAsAddressAbove)
                        BillingAddress
                            form is PostalAddressShortRequired
                        visible when (SupplierGroup.DisplayTypeForRegistration)
                            BillingAddress.Type
