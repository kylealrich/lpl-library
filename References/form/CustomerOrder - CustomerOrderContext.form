CustomerOrderContext is a Form
    Layout
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        Company.RepresentativeText
                        InventoryLocation.RepresentativeText
                            label is "Location"
                    paragraph
                        CustomerOrder
                            label is "Order"
                        Customer.RepresentativeText
                            label is "Customer"
                        visible when (HasIDMDocument)
                            button of "View"
                                link is external "<DerivedIDMDocumentLink>"
                                    lazy url retrieval
                                label is "Document"
                                display as link
                    column2
                        paragraph
                            TotalOrderAmount
                                label is "OrderTotal"
                            visible when (CurrencyEntered)
                                Currency.CurrencyDescriptionID
                                    label is "Currency"
                            visible when (not CurrencyEntered)
                                Currency
                                    label is "Currency"
                        OrderEntryOrderType.OrderEntryOrderTypeDescriptionID
                            label is "OrderType"
                        paragraph
                            RequestedDate
                                label is "RequestedDate"
                            OrderDate
                    column3
                        paragraph
                            Status
                                display as tag
                                    color of yellow when (Status.Unreleased)
                                    color of green when (Status.Released)
                                    color of red when (Status.Canceled)
                                    color of gray when (Status.ReadyForPurge)
                            visible when (OnProformaPaymentHold)
                                text of "RequiredProformaPayment"
                                    bold
                            visible when (HasProformaInvoice)
                                button of "<DerivedProformaInvoice>"
                                    view ProformaInvoiceRel.Attachment.File
                                    label is "ProformaInvoice"
                            visible when (IsHoldCode)
                                OnHoldMessage
                                    label is "_"
                                    display as tag
                        BillingProcessLevel.BillingProcessLevelDescriptionID
                            label is "ProcessLevel"
                        ExpectedShipDate
                            label is "ExpectedShipDate"
