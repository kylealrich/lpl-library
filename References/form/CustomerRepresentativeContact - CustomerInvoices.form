CustomerInvoices is a CompositeForm
    title is "<DerivedInvoiceFormTitle>"
    disable field options
    called out actions only
    context form is InvoiceActivityContextForm
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action InactivateContact
    restrict action EmailToCustomerContacts
    restrict action CustomerUpdateRequest
    restrict action UpdateMyContactInformation
    restrict action SelectPaymentMethod
    restrict action UnwindDeclinedPaymentRequest
    restrict action SendEmailForExternalUserMigrationUsernameChange
    Actions
        action is refresh
            label is "_"
    NationalOpenInvoices is a Panel
        title is "OpenInvoices"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParent)
        list is NationalAccountReceivableInvoiceOpenRel.PortalOpenInvoicesForNationalAccount
    NationalAccountInvoiceWithoutflags is a Panel
        title is "OpenInvoices"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParentWithoutFlags)
        list is NationalAccountReceivableInvoiceOpenRelWithoutFlagsRel.PortalOpenInvoicesForNationalAccount
    CustomerOpenInvoices is a Panel
        title is "OpenInvoices"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoiceOpenRel.PortalOpenInvoices
    CustomerAcrossCompaniesOpenInvoices is a Panel
        title is "OpenInvoices"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoiceOpenApplyCashAcrossReceivableCompaniesRel.PortalOpenInvoices
    NationalPaidInvoices is a Panel
        title is "PaidInvoices"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParent)
        list is NationalAccountReceivableInvoicePaidWithFlagsRel.PortalPaidInvoicesForNationalAccount
    NationalPaidInvoicesWithoutFlags is a Panel
        title is "PaidInvoices"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParentWithoutFlags)
        list is NationalAccountReceivableInvoicePaidWithoutFlagsRel.PortalPaidInvoicesForNationalAccount
    CustomerPaidInvoices is a Panel
        title is "PaidInvoices"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoicePaidRel.PortalPaidInvoices
    CustomerAcrossCompaniesPaidInvoices is a Panel
        title is "PaidInvoices"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoicePaidApplyCashAcrossReceivableCompaniesRel.PortalPaidInvoices
    CustomerPendingPaymentInvoices is a Panel
        title is "InvoicesWithPendingPayments"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoiceOpenRel.PortalPendingPaymentInvoices
    NationalCustomerPendingPaymentInvoicesWithFlags is a Panel
        title is "InvoicesWithPendingPayments"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParent)
        list is NationalAccountReceivableInvoiceOpenRel.PortalPendingPaymentInvoicesForNationalAccount
    NationalCustomerPendingPaymentInvoicesWithoutFlags is a Panel
        title is "InvoicesWithPendingPayments"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParentWithoutFlags)
        list is NationalAccountReceivableInvoiceOpenRelWithoutFlagsRel.PortalPendingPaymentInvoicesForNationalAccount
    CustomerAcrossCompaniesPendingPaidInvoices is a Panel
        title is "InvoicesWithPendingPayments"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoiceOpenApplyCashAcrossReceivableCompaniesRel.PortalPendingPaymentInvoices
