CashReceiptDepositContext is a Form
    Layout
        visible when (IsCreated)
            three column distributed
                column1
                    display as text
                        paragraph
                            CashCode.CashCodeAndDescription
                                label is "CashCode"
                            CashCode.Currency
                                no label
                        paragraph
                            Status
                            visible when (Status.Released)
                                first CashLedgerTransactionsRel.Status
                                    label is "BankTransactionStatus"
                        paragraph
                            DepositAmount
                                label is "DepositAmount"
                            visible when (IsUnreleased)
                                AppliedBankAmount
                                    label is "AppliedAmount"
                                BalanceAmount
                                    label is "Balance"
                            visible when (IsBatchApproved)
                                CashLedgerBatchApproval
                        paragraph
                            visible when (BudgetEditInProgress)
                                text of "BudgetEditsInProgress"
                                    bold
                                    color of red
                            visible when (BudgetEditFailure)
                                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                                    bold
                                    color of red
                column2
                    display as text
                        paragraph
                            CashLedgerCashReceiptHeader.BankTransactionCode.BankTransactionCodeName
                                label is "TransactionCode"
                        visible when (ReturnedPaymentExists)
                            first CashLedgerReturnedPaymentRel.ReturnDate
                                label is "ReturnDate"
                column3
                    display as text
                        paragraph
                            CashLedgerCashReceiptHeader.TransactionNumber
                                label is "DepositNumber"
                            visible when (Status.Released)
                                DerivedTransactionIdentifier
                                    label is "TransactionIdentifier"
                        paragraph
                            button of "RelatedCashLedgerTransaction"
                                link is RelatedCashLedgerTransaction
                                display as link
