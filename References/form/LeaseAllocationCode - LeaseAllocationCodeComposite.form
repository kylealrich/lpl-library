LeaseAllocationCodeComposite is a CompositeForm
    is primary
    title is "LeaseAllocationCode"
    context form is AllocationCodes
        background is theme color
    Actions
        action is Unreleased.Release
            hide when invalid
            valid when (IsCompletelyAllocated)
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Unreleased.Create
            action icon is create
            label is "_"
        action is save
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        visible when (not IsReleased)
        form is CreateAllocationCodes
    Details is a Panel
        list is LeaseAllocationCodeDetail set.LeaseAllocationCodeDetails
