ReplicationClass is a CompositeForm
    is primary
    title is "ReplicationClassFor<ReplicationSet>"
    Actions
        action is refresh
        action is save
        action is AddFields
            hide when invalid
        action is ValidateSchema
            hide when invalid
        action is ValidateBusinessClassSchemas
            hide when invalid
        action is Reset
            hide when invalid
        action is previous record
        action is next record
    Details is a Panel
        form is ReplicationClassContext
    Conditions is a Panel
        form is ConditionForm
    Fields is a Panel
        list is RepSetBCField set.primary
    CustomFields is a Panel
        visible when (ShowCustomFields)
        list is RepSetBCClientField set.primary
    RelatedReplicates is a Panel
        visible when (RelatedReplicatesValid)
        list is RepSetBCRelatedReplicate set.primary
    ValidationInformation is a Panel
        visible when (ShowValidationData)
        form is ValidationContextInfoForm
    ValidationCheckSumFields is a Panel
        visible when (ShowValidationCheckSumData)
        list is RepSetBCCheckSum set.DetailList
    ValidationResults is a Panel
        visible when (ShowValidationCheckSumHistory)
        list is RepSetBCValidationResult set.ValidationResults
    History is a Panel
        list is RepSetBCHistory set.RepSetBCHistoryList
