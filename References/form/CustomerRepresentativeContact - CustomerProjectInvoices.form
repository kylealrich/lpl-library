CustomerProjectInvoices is a CompositeForm
    title is "<DerivedInvoiceFormTitle>"
    disable field options
    called out actions only
    context form is ActivityContextForm
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action InactivateContact
    restrict action EmailToCustomerContacts
    restrict action CustomerUpdateRequest
    restrict action UpdateMyContactInformation
    restrict action SelectPaymentMethod
    restrict action UnwindDeclinedPaymentRequest
    restrict action SendEmailForExternalUserMigrationUsernameChange
    Actions
        action is refresh
            label is "_"
    NationalOpenInvoices is a Panel
        title is "Open"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountReceivableInvoiceOpenProjectRel.PortalProjectOpenInvoices
    CustomerOpenInvoices is a Panel
        title is "Open"
        visible when (IsActiveInvoiceCustomer)
        list is InvoiceCustomerReceivableInvoiceOpenProjectRel.PortalProjectOpenInvoices
    NationalPaidInvoices is a Panel
        title is "Paid"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountReceivableInvoicePaidProjectRel.PortalProjectPaidInvoices
    CustomerPaidInvoices is a Panel
        title is "Paid"
        visible when (IsActiveInvoiceCustomer)
        list is InvoiceCustomerReceivableInvoicePaidProjectRel.PortalProjectPaidInvoices
