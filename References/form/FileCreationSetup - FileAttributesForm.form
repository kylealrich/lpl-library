FileAttributesForm is a Form
    title is "FileAttributes"
    Layout
        header3 of "Attributes"
        paragraph
            FileType
            FileMimeType
        paragraph
            visible when (FileType.Separated)
                valid when (not TabSeparator)
                    FieldSeparator
                        when value changed
                            refresh FieldSeparatorEntered
                TabSeparator
                    display as switch
                    when value changed
                        refresh FieldSeparatorEntered
                valid when (FieldSeparatorEntered)
                    IncludeSeparatorAtBeginningOfRow
                        display as switch
                    ExcludeSeparatorWhenEmpty
                        display as switch
        single column
            visible when (FileType.Separated)
                FieldDelimiter
        single column
            EndOfLineCharacter
            visible when (FileType.Separated)
                RecordEndOfLineCharacter
        header3 of "Processing"
        single column
            FileSegmentLimit
            visible when (FileSegmentLimit.NumberOfRecords)
                NumberOfRecordsBeforeNewFile
            visible when (FileSegmentLimit.NumberOfMegabytes)
                NumberOfMegabytesBeforeNewFile
            GenerationBehaviorForNoOutput
                when value changed
                    refresh GenerateBlankDocument
            visible when (GenerateBlankDocument)
                OutputTextForBlankDocument
            ThreadingMethod
            visible when (not ThreadingMethod.SingleThreaded)
                OverrideNumberOfThreads
                    label is "NumberOf_Threads:"
        visible when (DisplayFileProcessing)
            single column
                FlowToProcessFile
                AutomaticallySendFileToION
                    display as switch
                visible when (AutomaticallySendFileToION)
                    IONDocumentName
                    IONInstanceCount
                    paragraph
                        IONDocumentID
                        text of "File_NameWillBeUsedIfLeftBlank"
                    paragraph
                        IONSource
                        text of "File_NameWillBeUsedIfLeftBlank"
        header3 of "ErrorHandling"
        single column
            ErrorHandling
            visible when (not ErrorHandling.Off)
                text of "ValidationOptions"
                    bold
                paragraph
                    ValidateCharacters
                        label is "Characters"
                        display as switch
                    valid when (ValidateCharacters)
                        CharacterCheck
                    valid when (CharacterCheck.UserDefined)
                        CharacterExpression
                ValidateRequiredFields
                    label is "RequiredFields"
                    display as switch
                ValidateLength
                    label is "Length"
                    display as switch
