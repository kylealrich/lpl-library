MobileOverview is a Form
    title is "Overview"
    Layout
        display as text
            single column
                Company.DerivedCompanyIDName
                    label is "Company"
                visible when (CreatedFromPurchaseOrder entered)
                    CreatedFromPurchaseOrder
                        label is "CreatedFromPO"
            two column
                column1 of 50%
                    MobileCreatedBy
                        label is "CreatedBy"
                column2 of 50%
                    ReasonCode.Description
                        label is "ReasonCode"
            paragraph
                ReplacementPurchaseOrderBuyer.Employee.FirstLastName
                    label is "Buyer"
            paragraph
                visible when (ReplacementPurchaseOrderBuyer.Employee.EmployeeWorkTelephone entered)
                    ReplacementPurchaseOrderBuyer.Employee.EmployeeWorkTelephone
                        label is "Phone"
            paragraph
                visible when (ReplacementPurchaseOrderBuyer.Employee.EmployeeWorkEmailAddress entered)
                    ReplacementPurchaseOrderBuyer.Employee.EmployeeWorkEmailAddress
                        label is "Email"
