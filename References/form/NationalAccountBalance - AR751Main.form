AR751Main is a Form
    title is "Main"
    Layout
        display as text
            two column distributed
                CurrentPlusBillOfExchangeBalance
                    label is "CurrentBalance"
                CompanyCustomerRel.ActiveStatus
                    label is "Status"
            two column distributed
                CurrentBalance
                    label is "InvoiceBalance"
                visible when (BOEProcessing)
                    BillOfExchangeBalance
            two column distributed
                column1
                    OpenOrderAmount
                        label is "OpenOrders"
                    PercentOfBalance
                        label is "PercentOfLimit"
                    CreditLimit
                    CreditLimitDate
                    DerivedHighBalance
                        label is "HighestBalance"
                    DerivedDisputedInvoiceAmount
                        label is "DisputeAmount"
                column2
                    CompanyCustomerRel.Contact
                    CompanyCustomerRel.PhoneNumber
                        label is "Telephone"
                    ReceivableHoldCode
                        label is "HoldCode"
                    CompanyCustomerRel.TermsCode
                    TotalReturnToMaker
                        label is "ReturnToMakerPaymentCount"
                    DerivedDisputedInvoices
                        label is "DisputeCount"
            paragraph
                button of "Comments"
                    link is CommentsNav
                    display as link
                button of "Balance"
                    link is BalanceNav
