ContractProposalWizardUpdateAction is an ActionForm
    action is UpdateFromProposal
    title is "UpdateContractLine"
    Layout
        single column
            visible when (ServiceItemType)
                visible when (not ServicePurchaseTypeContract)
                    ItemNumber
                        label is "ItemNumberForService"
                ItemDescription
                    label is "Description"
                ServiceCode
                visible when (ServiceCode.Quantity)
                    UOM.UnitOfMeasure
                        label is "UnitOfMeasure"
                    LifetimeMaximumQuantity
                        label is "ServiceQuantity"
                BaseCost
                    label is "UnitCost"
                visible when (not DistributionExists)
                    TransientAccount
                        label is "DefaultAccount"
                        compact format
            visible when (not ServiceItemType)
                ItemDescription
                    label is "Description"
                VendorItem
                UOM.UnitOfMeasure
                    label is "UnitOfMeasure"
                paragraph
                    Manufacturer
                        label is "ManufacturerCode"
                        compact format
                    ManufacturerNumber
                BaseCost
                    label is "UnitCost"
                visible when (not DistributionExists)
                    TransientAccount
                        label is "DefaultAccount"
                        compact format
