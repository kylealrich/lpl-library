EuropeanCommunitySalesReport is an ActionForm
    action is ECSalesReport
    Layout
        paragraph
            TaxEntity
            TaxEntity.Name
                no label
                display as text
        two column
            VatRptId
                label is "ReportIdentification"
                compact format
                select is VATReportIDs
            VatRptId.Description
                no label
                display as text
        two column
            TaxYear1
                label is "Year_andPeriod1"
            TaxPeriod1
                no label
        two column
            TaxYear2
                label is "Year_andPeriod2"
            TaxPeriod2
                no label
        two column
            TaxYear3
                label is "Year_andPeriod3"
            TaxPeriod3
                no label
        blank line
        single column
            SortOption
        single column
            Preliminary
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ECSalesReportReport_RDG
            column2 of 25%
                ECSalesReportReport_XPT
