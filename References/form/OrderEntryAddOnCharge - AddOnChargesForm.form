AddOnChargesForm is a Form
    is primary
    Layout
        header2 of "_"
        two column distributed
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            Active
        two column distributed
            paragraph
                OrderEntryAddOnCharge.Misc
                    label is "AddOnCharge"
                Description
            OrderEntryAddOnCharge.Currency
                label is "Currency"
        two column distributed
            ChargeType
            TrackType
                label is "TrackingType"
        header2 of "Price_or_Cost"
        two column distributed
            visible when (ChargeType.UnitPrice)
                UnitPrice
                UnitCost
        two column distributed
            visible when (ChargeType.FlatAmount)
                Price
                    label is "Price"
                Cost
        two column distributed
            visible when (ChargeType.Percentage)
                PricePercent
                    label is "PricePercentage"
                CostPercent
                    label is "CostPercentage"
        header2 of "Options"
        two column distributed
            column1
                paragraph
                    MajorSalesClass
                        select is SalesMajorClasses
                        show up to 10 characters
                    MajorSalesClass.Description
                        no label
                        display as text
                paragraph
                    MinorSalesClass
                        select is SalesMinorClass
                        show up to 10 characters
                    MinorSalesClass.Description
                        no label
                        display as text
            column2
                paragraph
                    OrderDiscount
                        label is "Discountable"
                paragraph
                    AddOnCharge
                        label is "AddOnCostCode"
                        select is ActivePOAddOnCosts
                    AddOnCharge.Description
                        no label
                        display as text
        header2 of "Accounts"
        single column
            SalesAccount
                compact format
            paragraph
                CostOfGoodsSoldAccount
                    label is "CostOfGoodsAccount"
                    compact format
            paragraph
                OffsetAccount
                    compact format
        header2 of "Tax"
        two column distributed
            TaxStatus
            paragraph
                TaxCode
                    label is "Code"
                    select is TaxCodes
            paragraph
                ProductTaxCategory
                    label is "Category"
            visible when (Company.TaxEntityRel.ThirdParty.Sabrix)
                paragraph
                    UNSPSCCode
                        compact format
                    UNSPSCCode.ShortDescription
                        label is "_"
                        display as text
            visible when (Company.TaxEntityRel.ThirdParty.VertexOSeries)
                paragraph
                    UNSPSCCode
                        compact format
                    UNSPSCCode.ShortDescription
                        label is "_"
                        display as text
                paragraph
                    HSNSACCode
                    HSNSACCode.Description
                        no label
                        display as text
