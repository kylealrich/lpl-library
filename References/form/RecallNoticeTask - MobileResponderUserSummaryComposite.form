MobileResponderUserSummaryComposite is a CompositeForm
    title is "Task<RecallNoticeTask>"
    context form is MobileResponderUserSummaryContext
    restrict action MobileAskAQuestion
    Actions
        action is save
            label is "_"
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is refresh
            label is "_"
    Products is a Panel
        visible when (HasRecallProducts)
        list is RecallNoticeTaskProductRel.MobileRecallNoticeTaskProductList
    Items is a Panel
        visible when (HasRecallProducts)
        list is RecallProductTaskItemRel.MobileTaskItemWithoutQuantityList
    Entered is a Panel
        visible when (HasRecallProductsWithQuantity)
        list is RecallProductTaskItemRel.MobileTaskItemWithQuantityList
    QuestionResponses is a Panel
        visible when (TaskWithQuestions)
        template is RecallNoticeTaskQuestion set
            business class is ResponseToRecallNoticeTaskQuestion
                form is MobileResponderResponseToTaskQuestion
    CommentsAndAttachments is a Panel
        title is "CommentsAndAttachments<AttachmentCount>"
        visible when (RecallNotice.ActiveRecallNotice)
        list is RecallNoticeTaskAttachment set.MobileResponderRecallNoticeTaskAttachmentList
    NoticeDetails is a Panel
        title is "NoticeDetails"
        form is MobileNoticeDetailsForm
    QAndAForum is a Panel
        title is "Q&A"
        visible when (HasTaskOwnerQandA)
        list is TaskOwnerQandARel.MobileRecallNoticeTaskQAndAList
