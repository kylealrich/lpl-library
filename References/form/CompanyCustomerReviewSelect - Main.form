Main is a Form
    Layout
        three column distributed
            display as text
                column1
                    Company.RepresentativeText
                    CustomerRel.RepresentativeText
                column2
                    CreditAnalyst.CreditAnalystName
                    paragraph
                        CompanyCustomerReviewSelect.SelectLevel
                        Type
                            label is "SelectReason"
                column3
                    paragraph
                        CustomerRel.Contact
                        CustomerRel.PhoneNumber.TelephoneDisplay
                            label is "TelephoneNumber"
                    CompanyCustomerReviewSelect.Date
                        label is "SelectedDateTime"
        paragraph
            DisplayTransactionCurrencyCode
                label is "Currency"
                display as text
            visible when (IsCompanyCustomerCurrency)
                text of "*Amounts_\\Are_\\Displayed_\\In_\\CompanyCustomer_\\Currency"
                    bold
                    color of yellow
            visible when (IsNationalAccountCompanyCustomerCurrency)
                text of "*Amounts_\\Are_\\Displayed_\\In_\\CompanyCustomer_\\Currency"
                    bold
                    color of yellow
