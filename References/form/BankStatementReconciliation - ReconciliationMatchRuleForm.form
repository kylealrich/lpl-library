ReconciliationMatchRuleForm is a Form
    title is "ReconciliationMatchRuleInformation"
    Layout
        display as text
            two column
                CashManagementAccount
                CashManagementAccount.Title
                    no label
            visible when (BankStatement entered)
                two column
                    BankStatement
                    BankStatement.StatementDate
            two column
                LineMatchField
                LineType
            blank line
            header2 of "LineMatchFieldValueWasAssignedByTheFollowingReconciliationMatchRule"
            two column
                CashManagementAccount.BankReconciliationMatchRuleGroup
                CashManagementAccount.BankReconciliationMatchRuleGroup.Description
                    no label
                    display as text
            two column
                BankReconciliationMatchRule
                BankReconciliationMatchRule.Description
                    no label
                    display as text
            blank line
            display as text
                two column distributed
                    column1
                        paragraph
                            BankReconciliationMatchRule.StatementRule
                        paragraph
                            BankReconciliationMatchRule.StatementRule.Condition
                                no label
                    column2
                        paragraph
                            BankReconciliationMatchRule.SystemRule
                        paragraph
                            BankReconciliationMatchRule.SystemRule.Condition
                                no label
                two column distributed
                    column1
                        paragraph
                            BankReconciliationMatchRule.LineMatchField
                        visible when (BankReconciliationMatchRule.UsesTransactionNumberVariable)
                            paragraph
                                BankReconciliationMatchRule.TransactionNumberSource
                                    label is "VariableSourceOnStatement"
                    column2
                        paragraph
                            BankReconciliationMatchRule.SystemLineMatchField
                header2 of "ModificationOptions"
                visible when (not BankReconciliationMatchRule.DisableApplyingModificationOptionsToVariablesOnly)
                    paragraph
                        text of "*ModificationOptionsWillOnlyBeAppliedToTheVariablePortionOfThe_\\Statement_\\Line_\\Match_\\FieldAnd_\\System_\\Line_\\Match_\\Field"
                            italics
                two column distributed
                    column1
                        BankReconciliationMatchRule.RemoveLeadingZeros
                        visible when (BankReconciliationMatchRule.DisplayRemoveAlphaCharacters)
                            paragraph
                                BankReconciliationMatchRule.RemoveAlphaCharacters
                            paragraph
                                BankReconciliationMatchRule.RemoveCharacterString
                                BankReconciliationMatchRule.RemoveString
                                    no label
                            paragraph
                                BankReconciliationMatchRule.RemoveCharactersBefore
                                BankReconciliationMatchRule.RemoveBefore
                                    no label
                            paragraph
                                BankReconciliationMatchRule.RemoveCharactersAfter
                                BankReconciliationMatchRule.RemoveAfter
                                    no label
                    column2
                        BankReconciliationMatchRule.SystemRemoveLeadingZeros
                        visible when (BankReconciliationMatchRule.DisplaySystemRemoveAlphaCharacters)
                            paragraph
                                BankReconciliationMatchRule.SystemRemoveAlphaCharacters
                            paragraph
                                BankReconciliationMatchRule.SystemRemoveCharacterString
                                BankReconciliationMatchRule.SystemRemoveString
                                    no label
                            paragraph
                                BankReconciliationMatchRule.SystemRemoveCharactersBefore
                                BankReconciliationMatchRule.SystemRemoveBefore
                                    no label
                            paragraph
                                BankReconciliationMatchRule.SystemRemoveCharactersAfter
                                BankReconciliationMatchRule.SystemRemoveAfter
                                    no label
                header2 of "AdditionalOptions"
                two column distributed
                    column1
                        paragraph
                            BankReconciliationMatchRule.ReconcileByAmount
                            visible when (BankReconciliationMatchRule.ReconcileByAmount)
                                BankReconciliationMatchRule.ReconcileByAmountType
                        paragraph
                            BankReconciliationMatchRule.MatchType
                    column2
                        paragraph
                            BankReconciliationMatchRule.ReconciliationTolerancePercent
                            text of "Or"
                            BankReconciliationMatchRule.ReconciliationToleranceAmount
                        paragraph
                            BankReconciliationMatchRule.UseDayLag
                            visible when (BankReconciliationMatchRule.UseDayLag)
                                paragraph
                                    BankReconciliationMatchRule.DayLag
                                    text of "Days"
                                paragraph
                                    BankReconciliationMatchRule.FutureDay
                                    text of "Days"
                                paragraph
                                    visible when (BankReconciliationMatchRule.DayToleranceMessage)
                                        text of "Note:TransactionsMustHaveTheSameDateAsTheStatementDateWhen_\\Day_\\LagAnd_\\Future_\\DayAreNotDefined"
                                            italics
                                    visible when (BankReconciliationMatchRule.PositiveFutureDay)
                                        text of "Range:<BankReconciliationMatchRule.DayLag>DaysBeforeStatementDateThrough<BankReconciliationMatchRule.DerivedFutureDay>DaysAfterStatementDate"
                                            bold
                                            color of blue
                                    visible when (BankReconciliationMatchRule.NegativeFutureDay)
                                        text of "Range:<BankReconciliationMatchRule.DayLag>DaysBeforeStatementDateThrough<BankReconciliationMatchRule.DerivedFutureDay>DaysBeforeStatementDate"
                                            bold
                                            color of blue
