Reminder is an ActionForm
    action is Reminder
    title is "Reminder"
    Layout
        header3 of "ReminderAboutPeriod_<ClosePeriod.CloseCalendarPeriod>_<ClosePeriod.CloseCalendar>"
        single column
            visible when (ShowExpectedCloseDate)
                DerivedDueDate
                    label is "ExpectedClose"
                    display as text
                    raise red alert when (RedAlert)
                        mouse over text is "Overdue"
                    raise yellow alert when (YellowAlert)
                        mouse over text is "InJeopardy"
            visible when (ShowClosedDate)
                DerivedDueDate
                    label is "Closed"
                    display as text
        header3 of "EnterDetailsAboutThisReminder"
        single column
            paragraph
                ReminderBeginDate
                    label is "BeginDate"
                ReminderDueDate
                    label is "DueDate"
        single column
            ReminderDescription
                label is "Description"
            ReminderNotes
                label is "Notes"
                use text area of 5 lines
        header3 of "AddAnAttachmentOrURL"
        single column
            ReminderAttachment
                label is "Attachment"
            ReminderLink
                label is "URL"
