AllocationTransactionDetail is a Form
    is primary
    title is "AllocationTransactionDetail<AllocationTransactionDetail>ForAllocationRun<AllocationRun>"
    Layout
        display as text
            visible when (HasError)
                single column
                    ErrorMessage
                        label is "Error"
            four column distributed
                column1
                    paragraph
                        System
                    paragraph
                        AllocationControl
                    paragraph
                        Allocation
                column2
                    paragraph
                        AllocationLine
                    paragraph
                        AllocationControl.Calendar
                            label is "Calendar"
                    paragraph
                        AllocationPeriod
                column3
                    paragraph
                        Direction
                    paragraph
                        StepNumber
                            label is "Step"
                    visible when (not IsUnits)
                        paragraph
                            TransactionAmount
                                label is "Amount"
                            CurrencyCode
                                no label
                column4
                    visible when (IsUnits)
                        paragraph
                            UnitsAmount
                                label is "Units"
                    paragraph
                        PostingDate
                    paragraph
                        AutoReverse
            blank line
            header3 of "FinanceStructure"
            four column distributed
                FinanceCodeBlock
            blank line
            visible when (not AllocationLine.AllocateUnits)
                blank line
                header3 of "Amounts"
                ReportCurrencyAmount
