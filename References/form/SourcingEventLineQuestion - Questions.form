Questions is a Form
    title is "SourcingEventLineQuestions"
    Layout
        single column
            QuestionText
                use text area of 8 lines
            ResponseType
                when value changed
                    refresh NonYesNoResponseType
        visible when (EligibleForWeighting)
            single column
                QuestionWeighting
        single column
            AllowResponseAttachment
                label is "AllowAttachmentUploadWithAnswer"
        single column
            visible when (NonYesNoResponseType)
                ResponseRules
                    display as required
            visible when (ResponseType.YesNoText)
                YesNoTextResponseRules
                    display as required
            visible when (ResponseType.YesNo)
                YesNoResponseRules
                    display as required
        single column
            visible when (EligibleForCM)
                CMQuestion
                    label is "SendQuestionToContractManagement"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        single column
            DisplayOrder
                display as text
