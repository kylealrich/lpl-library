ParticipantGroupLineMemberMain is a Form
    title is "Members"
    Layout
        two column
            ParticipantGroupLine.ParticipantLocation.Company
            CompanyName
                no label
                display as text
        two column
            ParticipantGroupLine.ParticipantLocation.Location
                label is "Location"
                select is InventoryLocationsWithPars
            LocationName
                no label
                display as text
        two column
            ParticipantGroupLine.ParticipantLocation.RequestingLocation
                label is "RequestingLocation"
            RequestingLocationName
                no label
                display as text
        two column
            ParticipantGroupLine.ParticipantLocation.PricingGroup
            PricingGroupDescription
                no label
                display as text
        visible when (MemberOnly)
            single column
                PurchaseMethod
