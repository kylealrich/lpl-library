ClassicConnectionForm is a Form
    is primary
    title is "InforLawsonConnection"
    Layout
        single column
            PfiConfiguration
            ConnectionType
            RetryCount
            RetryPauseTime
            visible when (ConnectionType.Web)
                header2 of "WebConnectionParameters"
                User
                Password
                ResourceID
                DataArea
                WebRoot
                text of "Example:_https://example.\\com:\\8443"
                    italics
                TimeOut
                PageSize
                button of "TestConnection"
                    action is TestConnection
            visible when (ConnectionType.EJB)
                header2 of "EJBConnectionParameters"
                EJBUser
                Host
                text of "MultipleHostNamesMustBeCommaSeparated"
                    italics
                IIOPPort
                text of "MultipleIIOPPortsMustBeCommaSeparated"
                    italics
                ConnectionFactory
                ServerNamespace
                button of "TestConnection"
                    action is TestConnection
            visible when (ConfigurationSetIsMain)
                header3 of "UserActionOverrideSettings"
                UAOverrideWebRoot
                    label is "WebRoot"
