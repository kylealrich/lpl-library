ReceivableLockBoxImportContext is a Form
    Layout
        two column
            column1
                paragraph
                    RunGroup
                paragraph
                    ReceivableLockBoxImport.LockBox
                    ReceivableLockBoxImport.LockBox.Name
                        no label
                        display as text
                paragraph
                    ReceivableLockBoxImport.LockBatch
                        label is "LockboxBatch"
                blank line
            column2
                visible when (ReceivableLockBoxImport.LockType.PaymentHeader)
                    paragraph
                        ReceivableLockBoxImport.LockType
                            label is "LockboxType"
                            display as text
                    paragraph
                        DepositDate
                        text of "(YYMMDD)"
                    paragraph
                        NumberOfTransactions
                            label is "TotalNumberOfTransactions"
                        TransactionAmount
                            label is "TotalTransactionAmount"
                        text of "(ImpliedDecimal)"
                    visible when (RecordInError)
                        paragraph
                            ErrorMessage
                                display as text
                visible when (not ReceivableLockBoxImport.LockType.PaymentHeader)
                    display as text
                        paragraph
                            HeaderImportRel.ReceivableLockBoxImport.LockType
                                label is "LockboxType"
                        paragraph
                            HeaderImportRel.DepositDate
                            text of "(YYMMDD)"
                        paragraph
                            HeaderImportRel.NumberOfTransactions
                                label is "TotalNumberOfTransactions"
                            HeaderImportRel.TransactionAmount
                                label is "TotalTransactionAmount"
                            text of "(ImpliedDecimal)"
        visible when (ReceivableLockBoxImport.LockType.PaymentDetail)
            header2 of "Payment"
            five column
                column1
                    ReceivableLockBoxImport.LockSeq
                        label is "PaymentSequence"
                    visible when (RecordInError)
                        paragraph
                            ErrorMessage
                                display as text
                column2
                    BankIDNumber
                        label is "BankNumber"
                column3
                    AccountID
                        label is "BankAccountNumber"
                column4
                    CheckNumber
                column5
                    paragraph
                        PaymentAmount
                        text of "(ImpliedDecimal)"
            blank line
            text of "FranchiseManagementFields"
                bold
            five column
                column1
                    Required
                column2
                    ShipToAddress
                        label is "ShipToAddress"
                column3
                    Contract
                column4
                    BillingDate
                column5
                    SalesAmount
                        label is "SalesAmount"
        blank line
        visible when (ReceivableLockBoxImport.LockType.RemittanceDetail)
            header2 of "Remittance"
            single column
                ReceivableLockBoxImport.LockRemitSeq
                    label is "RemittanceSequence"
                RemittanceNumber
                RemittanceSign
                AppliedAmount
