MobileReceiptHeaderDetails is a Form
    title is "Receipt"
    Layout
        display as text
            Company.DerivedCompanyIDName
                label is "Company"
            paragraph
                PurchaseOrder
                    label is "PurchaseOrder"
                PORelease
                    label is "Release"
                POCode
                    label is "Code"
            PurchaseOrderReceipt
                label is "Receipt"
            paragraph
                ReferenceNumber
                    label is "ReferenceNumber"
            DerivedStatus
                label is "Status"
                display as tag
                    color of yellow when (IsUnreleasedAndInProgress)
                    color of green when (Status.Released)
                    color of gray
