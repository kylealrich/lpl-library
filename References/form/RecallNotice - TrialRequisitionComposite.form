TrialRequisitionComposite is a CompositeForm
    title is "CreateTrialRequisitions"
    context form is TrialRequisitionContext
        background is theme color
    Actions
        action is Pending.CreateRequisitionsFromItemProposalTrial
            hide when invalid
        action is CopyFromAnotherTrialItemNotice
            hide when invalid
        action is Pending.AllTrialRequisitionsCreated
            hide when invalid
        action is refresh
            label is "_"
    ProposedNewProducts is a Panel
        list is ProductItemProposalRel.SelectedItemsForTrialRequisition
    TrialItemCompaniesAndLocations is a Panel
        list is NoRequisitionTrialItemCompaniesAndLocationsRel.SelectedTrialRequisitionCompaniesAndLocations
    TrialItemCompaniesAndLocationsWithRequisitions is a Panel
        visible when (HasTrialRequisitions)
        list is HasRequisitionTrialItemCompaniesAndLocationsRel.TrialRequisitionCompaniesAndLocationsWithRequisitions
