ConfigurableFeatures is a Form
    title is "ConfigurableFeaturesFor_'<Role>'"
    Actions
        action is UpdateConfigurableFeatures
    Layout
        header2 of "_"
        visible when (not IsConfigurableFeaturesEnabled)
            paragraph
                text of "Configurable_FeaturesNotEnabled!"
                    header3
                    bold
        paragraph
            Role
                header1
                bold
                display as text
                raise blue alert when (DataAreaHasOverride)
                    mouse over text is "TheseSettingsAreForThis_Data_AreaOnly!"
        display as text
            form is DataAreaConfigurableFeaturesDetail
