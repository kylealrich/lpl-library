EDICarrierForm is a Form
    title is "EDICarrier"
    Layout
        single column
            PfiEDICarrier
            IsEnabled
            EDIMethod
            PfiEDIFileTransfer.Host
            visible when (EDIMethod.SFTP)
                PfiEDIFileTransfer.EnableHostKeyChecking
                visible when (PfiEDIFileTransfer.EnableHostKeyChecking)
                    PfiEDIFileTransfer.HostKeyPath
                PfiEDIFileTransfer.AuthenticationType
            PfiEDIFileTransfer.User
            visible when (EDIMethod.SFTP)
                visible when (PfiEDIFileTransfer.AuthenticationType.UserAndPrivatekey)
                    PfiEDIFileTransfer.PrivatekeyPath
                    PfiEDIFileTransfer.Passphrase
                visible when (PfiEDIFileTransfer.AuthenticationType.UserAndPassword)
                    PfiEDIFileTransfer.SftpPassword
                visible when (PfiEDIFileTransfer.AuthenticationType.UserPasswordAndPrivateKey)
                    PfiEDIFileTransfer.SftpPassword
                    PfiEDIFileTransfer.PrivatekeyPath
                    PfiEDIFileTransfer.Passphrase
            PfiEDIFileTransfer.TimeOut
            PfiEDIFileTransfer.OutboundDirectory
            PfiEDIFileTransfer.OutboundFile
            PfiEDIFileTransfer.InboundDirectory
            PfiEDIFileTransfer.MoveDirectory
            DoNotDelete
            ContinueOnError
            Encrypt
            Decrypt
            EnableDebugLogging
            visible when (EnableDebugLogging)
                NumberOfDays
                    when value changed
                        refresh ExpirationTimeStamp
                ActivationTimeStamp
                    when value changed
                        refresh ExpirationTimeStamp
                ExpirationTimeStamp
                    raise red alert when (IsDebugExpired)
                        mouse over text is "DebugLoggingExpired"
            PfiEDIFileTransfer.TestFile
            visible when (PfiEDIFileTransfer.TestFile)
                PfiEDIFileTransfer.DestinationFilePath
        two column
            button of "TestConnection"
                action is TestConnection
            button of "TestConnectionWithTraceLog"
                action is TestConnectionWithTraceLog
