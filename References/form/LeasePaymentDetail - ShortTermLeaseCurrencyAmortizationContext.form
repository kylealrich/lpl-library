ShortTermLeaseCurrencyAmortizationContext is a Form
    title is "ShortTermCurrencyAmortization"
    Layout
        display as text
            three column distributed
                column1
                    Company
                    Lease
                    Lease.LeaseClassification
                        label is "Classification"
                    Vendor
                column2
                    paragraph
                        Lease.Compounding
                        Lease.Term
                    Lease.DerivedLeaseRate
                        label is "InterestRate"
                    Lease.PaymentTiming
                    DerivedUpFrontLeaseCost
                        label is "UpFrontCosts"
                    LeasePayment.StraightLineAmount
                column3
                    paragraph
                        Lease.BeginDate
                        Lease.EndDate
                    Lease.LeaseObligation.TransactionAmount
                        label is "BeginningLiabilityAmount"
                    Lease.NetPresentValue.TransactionAmount
                        label is "BeginningNetPresentValueAmount"
                    Lease.LeaseROUAssetAmount.TransactionAmount
                        label is "BeginningROUAmount"
