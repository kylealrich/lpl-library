ChangeTemplate is an ActionForm
    action is ChangeTemplate
    title is "ChangeTemplate"
    Layout
        single column
            NewTemplate
            visible when (NewTemplate.MatchInvoice)
                PrmPurchaseOrder
            visible when (NewTemplate.ServiceContract)
                PrmServiceContract
            visible when (not NewTemplate.MatchInvoice)
                visible when (not NewTemplate.ServiceContract)
                    PrmKeepDistributions
            visible when (InvoiceType.DebitMemo)
                visible when (NewTemplate.MatchInvoice)
                    paragraph
                        PrmChangeToInvoice
                            label is "ChangeFromDebitMemoToInvoice"
                                left of field
                        text of "_or_"
                        PrmOriginalInvoice
                            label is "OriginalInvoice"
                        PrmOriginalInvoice.Invoice
                            no label
                            display as text
            visible when (InvoiceType.CreditMemo)
                visible when (NewTemplate.MatchInvoice)
                    paragraph
                        PrmOriginalInvoice
                            label is "OriginalInvoice"
                        PrmOriginalInvoice.Invoice
                            no label
                            display as text
