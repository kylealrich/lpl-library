UpdateFieldForm is an ActionForm
    action is UpdateField
        on completion navigate to ConfigConsoleNav
    title is "Update<FieldName>In<BusinessClass>Field"
    Layout
        single column
            header2 of "DefaultLabel"
            text of "TheDefaultLabelForTheFieldIs_'<FieldName>',_UnlessExplicitlyDefined"
                color of blue
            paragraph
                HasExplicitLabelParam
                valid when (HasExplicitLabelParam)
                    ExplicitLabelParam
        single column
            header2 of "FieldType"
            IsTransientParam
            paragraph
                IsNamedTypeParam
                valid when (IsNamedTypeParam)
                    TypeNameParam
            paragraph
                valid when (not IsNamedTypeParam)
                    ExtendedTypeParam
                    valid when (ExtendedTypeParam.HasSize)
                        FieldSizeParam
                    valid when (ExtendedTypeParam.HasDecimal)
                        DecimalSizeParam
        single column
            header2 of "RequiredRule"
            paragraph
                IsRequiredParam
                valid when (IsRequiredParam)
                    RequiredWhenParam
                        select is ConditionBusinessFieldList
                    RequiredNegatedParam
        single column
            header2 of "InitialValueRule"
            paragraph
                HasInitialValueRuleParam
                text of "TheInitialValueWhenTheDataIsCreated"
            valid when (HasInitialValueRuleParam)
                paragraph
                    IsInitialValueConstantParam
                    visible when (IsInitialValueConstantParam)
                        InitialValueConstantParam
                    visible when (not IsInitialValueConstantParam)
                        InitialValueFieldParam
        single column
            header2 of "DefaultValueRule"
            paragraph
                HasDefaultValueRuleParam
                text of "ThisValueIsSavedIfTheFieldIsBlank"
            valid when (HasDefaultValueRuleParam)
                paragraph
                    IsDefaultValueConstantParam
                    visible when (IsDefaultValueConstantParam)
                        DefaultValueConstantParam
                    visible when (not IsDefaultValueConstantParam)
                        DefaultValueFieldParam
