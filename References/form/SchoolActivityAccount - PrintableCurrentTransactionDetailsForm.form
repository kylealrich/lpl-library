PrintableCurrentTransactionDetailsForm is a SummaryForm
    title is "CurrentTransactionDetails"
    Layout
        paragraph
            StudentActivitySchool
                label is "School"
            StudentActivitySchool.SchoolName
                no label
        paragraph
            SchoolActivityAccount
                label is "Activity"
                compact format
            Description
                no label
        two column
            text of "LastPeriodEndingBalance"
                bold
            LatestClosePeriodEndingBalance
                no label
                right align
                display zero
        blank line
        visible when (HasReceiptDetails)
            list is StudentActivityReceiptDetailRel.ReceiptDetailList
        visible when (HasBankReceiptDetails)
            list is StudentActivityBankCreditsRel.BankReceiptDetailList
            visible when (HasReceiptDetails)
                single column
                    CurrentReceipts
                        label is "TotalReceiptAmount"
        blank line
        visible when (HasDisbursementDetails)
            list is StudentActivityDisbursementRel.DisbursementDetailList
        blank line
        visible when (HasTransferDetails)
            list is StudentActivityTransferDetailRel.TransferDetailList
        visible when (HasBankTransferDetails)
            list is StudentActivityBankTransferRel.BankTransferDetailList
        two column
            text of "CurrentBalance"
                bold
            CurrentBalance
                no label
                right align
                display zero
