Picture is a Form
    title is "ItemImage"
    Layout
        single column
            visible when (SpecialItemAndLineExists)
                visible when (CanUseImageURL)
                    ItemImageURL
                    text of "Picture"
                    Picture.File
                        no label
                        align as label
                        display as image
                visible when (not CanUseImageURL)
                    Picture.File
                        no label
                        align as label
                        display as image
            visible when (ItemHasPicture)
                visible when (UseImageURL)
                    ItemImageURL
                visible when (not UseImageURL)
                    DerivedPicture
                        no label
                        align as label
                        display as image
