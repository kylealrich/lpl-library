CustomerOrder is a CompositeForm
    is primary
    title is "<CustomerOrderFormTitle>"
    context form is CustomerOrderContext
        background is theme color
    Actions
        action is GenerateCustomerOrderIDM
            action icon is pdf
            label is "GenerateCustomerOrder"
            hide when invalid
        action is SendCustomerOrderToPrinter
            action icon is print
            label is "PrintCustomerOrder"
            hide when invalid
        action is SendCustomerOrderToEmail
            action icon is send
            label is "EmailCustomerOrder"
            hide when invalid
        action is Unreleased.Release
            action icon is release
            hide when invalid
        action is Unreleased.ReleaseShipImmediates
            action icon is release
            hide when invalid
        action is UpdateHoldCode
            action icon is edit
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Unreleased.Create
            action icon is create
            label is "_"
        action is save
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Process is a Panel
        form is CustomerOrderProcess
    Payment is a Panel
        form is CustomerOrderPayment
    Addresses is a Panel
        form is Addreses
    Charges is a Panel
        list is AddOnChargesForCustomerOrderRel.OrderAddOnCharges
    Totals is a Panel
        form is OrderTaxInquiry
    Lines is a Panel
        visible when (IsUnreleased)
        list is CustomerOrderLinesRel.Lines
    CancelLine is a Panel
        title is "Lines"
        visible when (IsReleased)
        list is CustomerOrderLinesRel.CustomerOrderLines
    CreditStatus is a DashBoardPanel
        title is "CreditStatus"
        show 4 columns
        CustomerCredit is a Panel
            double width
            form is CustomerCreditStatus
        CustomerAgingStatus is a Panel
            double width
            form is CreditStatusAging
    Attachments is a Panel
        list is CustomerOrderAttachment set.AttachmentsList
    ProformaDetails is a Panel
        visible when (HasProformaInvoice)
        list is ProformaInvoiceRel.COProformaInvoiceList
