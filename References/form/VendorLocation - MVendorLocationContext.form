MVendorLocationContext is a Form
    title is "VendorLocationContext"
    restrict action Delete
    restrict action Create
    Layout
        four column distributed
            column1
                Logo.File
                    no label
                    align as label
                    display as full image up to 5 lines
                        missing image is missingpicture96px
            column2
                paragraph
                    visible when (not RecordExists)
                        VendorGroup
                    visible when (RecordExists)
                        VendorGroup
                            display as text
                    VendorGroup.Description
                        no label
                        display as text
                visible when (not RecordExists)
                    VendorLocation
                        label is "Location"
                visible when (RecordExists)
                    VendorLocation
                        label is "Location"
                        display as text
                AddressEffectiveDate
            column3
                paragraph
                    visible when (not RecordExists)
                        Vendor
                    visible when (RecordExists)
                        Vendor
                            display as text
                    Vendor.VendorName
                        no label
                        display as text
                VendorName
                    label is "Name"
                paragraph
                    visible when (PurchaseFromLocationExists)
                        button of "View/\\UpdatePurchasingDetails"
                            link is MPurchaseFromLocationNav
                            display as link
            column4
                Status
                visible when (OnHold)
                    paragraph
                        text of "VendorLocationIsOnHold"
                            bold
                            color of red
        visible when (LocationOnHold)
            paragraph
                text of "VendorClaimsChargbackHold:"
                    bold
                    color of red
                VendorClaimHoldCode
                    no label
                    display as text
