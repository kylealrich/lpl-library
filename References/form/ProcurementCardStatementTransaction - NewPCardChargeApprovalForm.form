NewPCardChargeApprovalForm is a CompositeForm
    title is "ProcurementCardCharge"
    restrict action Unreleased.Create
        when (not Status.Unreleased)
    Actions
        action is Released.Approve
            action icon is icon.approve
            label is "Approve"
            hide when invalid
        action is Released.Dispute
            label is "Dispute"
            hide when invalid
        action is Approved.Reject
            action icon is icon.reject
            label is "Reject"
            hide when invalid
        action is Approved.Close
            label is "Close"
            hide when invalid
        action is Disputed.Approve
            action icon is icon.approve
            label is "Approve"
            hide when invalid
        action is Rejected.Approve
            action icon is icon.approve
            label is "Approve"
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Dashboard is a DashBoardPanel
        use 12 column grid
        Overview is a Panel
            title is "Statement_Charge_Information"
            span 6 columns
            double height
            overview navigation is ViewProcurementCardCharges
            form is DashboardOverview
        Comments is a Panel
            title is "Comments_and_Attachments"
            span 6 columns
            double height
            list is ProcurementCardStatementTransactionCommentRel.CommentsDashboard
        Distributions is a Panel
            span 12 columns
            double height
            list is ProcurementCardStatementTransactionDistribution set.DistributionsDashboard
