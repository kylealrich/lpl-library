InventoryTransactionLineDistributionContext is a Form
    Layout
        three column distributed
            display as text
                column1
                    Company.RepresentativeText
                        label is "Company"
                    TransactionSystemCode
                    InventoryTransaction.InventoryDocumentType
                column2
                    InventoryLocation.RepresentativeText
                        label is "Location"
                    InventoryTransaction
                    visible when (not InventoryTransactionLine.IsInventoryTransaction)
                        InventoryTransactionLine.OriginatingTransactionDocument
                column3
                    Status
                        label is "Status"
                    visible when (not FromWorkOrder)
                        paragraph
                            AddOnCharge
                            AddOnCharge.Description
                                no label
                    visible when (FromWorkOrder)
                        paragraph
                            BurdenCode
                            BurdenCode.Description
                                no label
                    visible when (not InventoryTransactionLine.IsInventoryTransaction)
                        InventoryTransactionLine.OriginatingTransactionLine
