StudentActivityBankStatementForm is a CompositeForm
    is primary
    title is "<mode>BankStatement"
    context form is StudentActivityBankStatementContextForm
    Actions
        action is Entered.Create
            action icon is create
        action is Entered.CloseBankStatement
            hide when invalid
        action is Closed.ReopenBankStatement
            hide when invalid
        action is save
        action is save and new
        action is Entered.Delete
            action icon is delete
            hide when invalid
        action is next record
        action is previous record
        action is refresh
    UnreconciledTransactions is a Panel
        visible when (Status.Entered)
        list is UnreconciledBankTransactionsRel.UnreconciledTransactionsList
    ReconciledTransaction is a Panel
        list is StudentActivityBankTransaction set.ReconciledTransactionsList
    ReconciliationBalances is a Panel
        form is ReconciliationBalancesForm
