VehicleTripContextForm is a Form
    Layout
        four column distributed
            column1
                visible when (not RecordExists)
                    Company
                visible when (RecordExists)
                    Company.DerivedCompanyDisplay
                        label is "Company"
                        display as text
                visible when (not RecordExists)
                    Vehicle
                        select is VehicleRel.VehicleList
                visible when (RecordExists)
                    DerivedVehicleName
                        label is "Vehicle"
                        display as text
                CurrentLoadText
                    no label
                    display as text
                visible when (RecordExists)
                    paragraph
                        DerivedCurrentLoadWeight
                            label is "Weight"
                            display as text
                    paragraph
                        DerivedCurrentLoadVolume
                            label is "Cubic_Volume"
                            display as text
            column2
                visible when (not RecordExists)
                    InventoryLocation
                visible when (RecordExists)
                    InventoryLocation.DerivedInventoryLocationIDName
                        label is "Inventory_Location"
                        display as text
                Vehicle.VehicleIdentifier
                    display as text
                MaximumVehicleCapacityText
                    no label
                    display as text
                visible when (RecordExists)
                    paragraph
                        DerivedVehicleWeightCapacity
                            label is "Weight"
                            display as text
                    paragraph
                        DerivedVehicleVolume
                            label is "Cubic_Volume"
                            display as text
            column3
                VehicleTrip
                    display as text
                visible when (VehicleOperatorDisplayAsText)
                    VehicleOperator
                        display as text
                visible when (not VehicleOperatorDisplayAsText)
                    VehicleOperator
                FillRatePercentageText
                    no label
                    display as text
                visible when (RecordExists)
                    paragraph
                        DerivedFillRateWeight
                            label is "Weight"
                            display as text
                            raise yellow alert when (WeightAlert)
                                mouse over text is "<WeightAlertMessage>"
                    paragraph
                        DerivedFillRateVolume
                            label is "Volume"
                            display as text
                            raise yellow alert when (VolumeAlert)
                                mouse over text is "<VolumeAlertMessage>"
            column4
                StartDateAndTime
                    display as text
                visible when (CompletedTrip)
                    EndDateAndTime
                        display as text
                StatusMsgTagField
                    display as tag
                        color of blue when (TripCreated)
                        color of yellow when (TripStarted)
                        color of yellow when (InTransitTrip)
                        color of green when (CompletedTrip)
                paragraph
                    WarehouseDock
                        label is "LoadingDock"
                        select is WarehouseDockRel.AllActiveWarehouseDockList
                visible when (HasIDMDocument)
                    button of "View"
                        link is external "<DerivedIDMDocumentLink>"
                            lazy url retrieval
                        label is "Document"
                        display as link
