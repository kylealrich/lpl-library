PhoneProjectContractChangeRequestForm is a Form
    title is "<FinanceEnterpriseGroup.ProjectLabel>ContractChangeRequestFor<Description>"
    Layout
        two column
            column1
                ProjectContract.DisplayContract
                    label is "<FinanceEnterpriseGroup.ProjectLabel>Contract"
                    display as text
            column2
                ProjectContract.Project.Description
                    label is "Description"
                    display as text
        two column
            column1
                ChangeRequestDate
                    label is "RequestedDate"
                    display as text
            column2
                Description
                    display as text
        two column distributed
            column1
                paragraph
                    ProjectContract.ContractAmount
                        label is "CurrentContractAmount"
                        display as text
                    NewContractAmount
                        label is "NewContractAmount"
                        display as text
            column2
                paragraph
                    ProjectContract.MaximumFees
                        label is "CurrentMaximumFees"
                        display as text
                    NewMaximumFees
                        label is "NewMaximumFees"
                        display as text
        two column
            column1
                Scenario
                    label is "BudgetScenario"
                    display as text
                    show up to 5 characters
            column2
                Scenario.Description
                    display as text
                    show up to 30 characters
        two column
            column1
                BudgetChangeOrder
                    label is "BudgetChangeRequest"
                    display as text
                    show up to 5 characters
            column2
                BudgetChangeOrder.Description
                    display as text
                    show up to 30 characters
        single column
            paragraph
                RequestedBy
                    label is "RequestedBy"
                    display as text
        single column
            Comment
                label is "Comment"
                use text area of 3 lines
            DocumentURL
                display as text
            button of "View"
                visible when (HasAttachment)
                view Attachment.File
                display as link
