SourcingEventLine is a Form
    title is "Event-LineInformation"
    Layout
        paragraph
            ItemNumber
                label is "Item"
                display as required when (ItemNumberRequired)
                when value changed
                    refresh CommodityCodeRequired
                    refresh ItemDescriptionRequired
            ItemType
                display as required when (ItemTypeRequired)
                when value changed
                    refresh DescriptionRequired
                    refresh ItemNumberRequired
            ServiceCode
        paragraph
            ItemDescription
                display as required when (ItemDescriptionRequired)
            ItemDescription2
            Name
        single column
            ItemDescription3
                label is "LongItemDescription"
                use text area of 2 lines
        paragraph
            CommodityCode
                compact format
                select is CommodityCodeSelect
                display as required when (CommodityCodeRequired)
            CommodityCode.Description
                no label
                display as text
        single column
            Description
                use text area of 3 lines
                display as required when (DescriptionRequired)
        four column distributed
            paragraph
                ManufacturerInformation.Manufacturer
                    label is "ManufacturerCode"
                    compact format
                ManufacturerInformation.ManufacturerNumber
                    label is "ManufacturerNumber"
            paragraph
                Quantity
                    display as required when (QuantityRequired)
                UOM.UnitOfMeasure
                    select is ValidBuyUnitsOfMeasure
                    display as required when (UOMRequired)
            PerUnitEstimate
            visible when (PerUnitEstimateEntered)
                DerivedExtendedEstimate
                    label is "ExtendedEstimate"
                    display as text
        visible when (AOCPerUnitEstimateEntered)
            four column
                blank line
                blank line
                blank line
                DerivedExtendedAOCEstimate
                    label is "AOCEstimate"
                    display as text
            four column
                blank line
                blank line
                blank line
                DerivedTotalEstimate
                    label is "TotalEstimate"
                    display as text
        header2 of "ResponseOptions"
        paragraph
            OutputType
                display as required when (OutputTypeRequired)
                when value changed
                    refresh ItemNumberRequired
                    refresh RequestedDeliveryDateRequired
                    refresh ShipToRequired
                    refresh UOMRequired
            button of "<DerivedAwardDefaults>"
                visible when (EffectiveDateOutputTypes)
                link is DefaultLineAwardInformation
                display as link
        four column distributed
            RequireResponse
                display as required when (RequireResponseRequired)
            AllowAdvancedPricing
                label is "AllowPriceBreaks"
            AllowAlternateResponses
            RequireFullQuantity
        four column distributed
            visible when (not OutputType.Service)
                AllowAddOnCharge
            LowestBidOption
                when value changed
                    refresh DisplayLowestBidAmountRequired
            DisplayLowestBidAmount
                label is "DisplayLowestBidAmountToSupplier"
                display as required when (DisplayLowestBidAmountRequired)
        visible when (OutputType.PO)
            three column distributed
                RequestedDeliveryDate
                    display as required when (RequestedDeliveryDateRequired)
                paragraph
                    ShipTo
                        display as required when (ShipToRequired)
                    ShipTo.Name
                        no label
                        display as text
                DeliverTo
        visible when (ShipTo entered)
            display as text
                paragraph
                    ShipTo.PostalAddressForPurchaseOrder.Country
                        label is "ShipToAddress"
                    ShipTo.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine1
                        no label
                    ShipTo.PostalAddressForPurchaseOrder.Municipality
                        no label
                    ShipTo.PostalAddressForPurchaseOrder.StateProvince
                        no label
                    ShipTo.PostalAddressForPurchaseOrder.PostalCode
                        no label
        four column distributed
            UnspscCode
                label is "UNSPSC"
                compact format
            paragraph
                GlobalTradeItemNumber
                    label is "GTIN"
                GlobalTradeItemNumber.FullDescription
                    no label
                    display as text
            DistributionType
            DistCode
                label is "DistributionCode"
