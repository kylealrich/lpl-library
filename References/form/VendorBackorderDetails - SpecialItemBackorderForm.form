SpecialItemBackorderForm is an ActionForm
    action is CreateSpecialItemBackorder
    title is "BackorderSpecialItem"
    Layout
        two column
            column1
                ProcurementGroup
                    label is "ContractGroup"
                    show up to 10 characters
                Contract
                    select is ValidContractsSelect
                    show up to 10 characters
                display as text
                    ContractLine.ItemNumber
                    ContractLine.Vendor
                    ContractLine.VendorItem
            column2
                display as text
                    ProcurementGroup.Description
                        no label
                ContractLine
                    select is SpecialItemContractLinesSelect
                display as text
                    ContractLine.ItemDescription
                        no label
                    Vendor.VendorName
                        no label
                    ContractLine.VendorItemDescription
                        no label
        single column
            BackorderType
            StartDate
            EstimatedAvailabilityDate
