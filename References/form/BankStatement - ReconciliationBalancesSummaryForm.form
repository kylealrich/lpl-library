ReconciliationBalancesSummaryForm is a SummaryForm
    title is "ReconciliationBalances"
    Layout
        visible when (false)
            AssignLocalPostingPeriod
        paragraph
            CashManagementAccount
                display as text
            CashManagementAccount.Title
                no label
                display as text
        paragraph
            BankStatement
                label is "StatementNumber"
                display as text
            StatementDate
                display as text
            StatementCurrency
                display as text
            StatementStatus
                display as text
            PostingStatus
                display as text
            EntryMethod
                display as text
        header3 of "ReconciliationBalances"
        two column
            column1
                BeginningBalance
                    display when blank
                ReconciledDeposits
                    display when blank
                visible when (HasPendingDepositLines)
                    PendingDeposits
                        display when blank
                ReconciledPayments
                    display when blank
                visible when (HasPendingPaymentLines)
                    PendingPayments
                        display when blank
                visible when (HasAnyUnreconciledLines)
                    UnreconciledAmount
                        display when blank
                CalculatedBankBalance
                    display when blank
                EndingBalance
                    display when blank
                OutOfBalanceAmount
                    display when blank
                CurrentCashCodeBalance
                    display when blank
            column2
                CalculatedBankBalance
                    display when blank
                visible when (not CashManagementAccount.OnlyReconcileToForecast)
                    OutstandingDeposits
                        display when blank
                visible when (HasPendingDepositLines)
                    AllPendingDeposits
                        display when blank
                visible when (not CashManagementAccount.OnlyReconcileToForecast)
                    OutstandingPayments
                        display when blank
                visible when (HasPendingPaymentLines)
                    AllPendingPayments
                        display when blank
                visible when (HasAnyUnreconciledLines)
                    AllUnreconciled
                        label is "AllUnreconciledAmount"
                        display when blank
                visible when (HasAnyUnpostedDistributions)
                    UnpostedDistribution
                        display when blank
                visible when (HasPostedDistributionsForPeriod)
                    PostedDistributionsForPeriod
                        label is "PostedDistributions"
                        display when blank
                visible when (HasVarianceAdjustmentsNotPostedInPeriod)
                    VarianceAdjustmentsNotPostedInPeriod
                        label is "VariancesNotPostedInPeriod"
                        display when blank
                visible when (HasReconciledTransactionsNotPostedInPeriod)
                    ReconciledTransactionsNotPostedInPeriod
                        display when blank
                CalculatedGeneralLedgerBalance
                    label is "CalculatedGlobalLedgerBalance"
                    display when blank
                GeneralLedgerBalance
                    label is "GlobalLedgerBalance"
                    display when blank
                visible when (ReportingBasisNotEntered)
                    text of "*ReportingBasisIsNotDefinedForCashManagementAccount"
                        bold
                        italics
                GeneralLedgerBalanceVariance
                    label is "GlobalLedgerBalanceVariance"
                    display when blank
                visible when (HasCashCodeBalancesForPeriod)
                    CashCodeCashPosition
                        display when blank
        list is CashCodeCashPositionRel.BankStatementCashCodePosition
        list is ReconciledLinesRel.ReconciledStatementLinesList
        visible when (HasPendingLines)
            list is AllPendingLinesRel.PendingStatementLinesList
        visible when (HasPendingLineDetails)
            list is AllPendingLineDetailsRel.PendingStatementLineDetailsList
        visible when (HasUnreconciledLines)
            list is AllUnreconciledLinesRel.UnreconciledStatementLinesList
        visible when (HasUnreconciledLineDetails)
            list is AllUnreconciledLineDetailsRel.UnreconciledStatementLineDetailsList
        visible when (HasCashLedgerReconciledVariances)
            list is CashLedgerReconciledVariancesRel.CashLedgerReconciliationAdjustmentList
        visible when (CashManagementAccount.ReconcileToCashLedger.Primary)
            list is UnreconciledCashLedgerTransactionsRel.OpenCashLedgerTransactionAsOfReportDate
        visible when (CashManagementAccount.ReconcileToOtherSystem.Primary)
            list is UnreconciledNonCashLedgerTransactionsRel.NonCashLedgerTransactionList
        visible when (HasUnpostedStatementLineDistributions)
            list is AllUnpostedStatementLineDistributionsRel.UnpostedStatementLineDistributionsList
        visible when (HasUnpostedNonCashLedgerDistributions)
            list is AllUnpostedNonCashLedgerDistributionsRel.UnpostedNonCashLedgerVarianceDistributionsList
        visible when (HasPostedStatementLineDistributionsForPeriod)
            list is PostedStatementLineDistributionsForPeriodRel.PostedStatementLineDistributionsList
        visible when (HasPostedNonCashLedgerDistributionsForPeriod)
            list is PostedNonCashLedgerDistributionsForPeriodRel.PostedNonCashLedgerVarianceDistributionsList
        visible when (HasVarianceAdjustmentsNotPostedInPeriod)
            list is VarianceAdjustmentsNotPostedInPeriodRel.UnpostedReconciliationVarianceAdjustmentsList
        visible when (HasReconciledTransactionsNotPostedInPeriod)
            list is ReconciledTransactionsNotPostedInPeriodRel.ReconciledTransactionsNotPostedInPeriod
