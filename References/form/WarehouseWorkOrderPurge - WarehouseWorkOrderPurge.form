WarehouseWorkOrderPurge is an ActionForm
    action is WarehouseWorkOrderPurge
    Layout
        two column distributed
            paragraph
                WorCompany
                    label is "Company"
                WorCompany.Name
                    no label
                    display as text
            paragraph
                WorLocation
                    label is "Location"
                    select is ProductionLocations
                    show up to 8 characters
                WorLocation.Name
                    no label
                    display as text
        blank line
        single column
            FormSelection
                no label
                display as horizontal radio buttons
        visible when (FormSelection.ByDate)
            single column
                EndDate
                    label is "CutoffDate"
        visible when (FormSelection.ByNumberOfDays)
            two column distributed
                AddSubtract
                    label is "NumberOfDays"
                AddDays
                    label is "Days"
        blank line
        two column distributed
            paragraph
                DeleteDetailFl
                    label is "DeleteDetailOnly"
                ToDisk
                    label is "ArchiveRecords"
            PurgeData
                label is "UpdateOption"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                WarehouseWorkOrderPurgeReport_RDG
            column2 of 25%
                WarehouseWorkOrderPurgeReport_XPT
