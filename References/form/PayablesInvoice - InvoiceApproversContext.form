InvoiceApproversContext is a Form
    title is "InvoiceApprovers"
    Layout
        display as text
            three column distributed
                DerivedCompanyNameID
                    label is "Company"
                DerivedVendorNameID
                Invoice
        display as text
            three column distributed
                column1
                    paragraph
                        visible when (InvoiceRoutingCodeGroupEntered)
                            InvoiceRoutingCodeGroup.Name
                        RoutingCode.InvoiceRoutingCode
                            label is "ApprovalCode"
                        RoutingCode.Description
                            no label
                    paragraph
                        RoutingCode.InitialApproverSelectionMethod
                        visible when (RoutingCode.InitialApproverSelectionMethod.SpecificApprovalLevel)
                            RoutingCode.InitialApprovalLevel
                            RoutingCode.InitialApprovalLevel.ApprovalLevel
                                display as text
                            RoutingCode.InitialApprovalLevel.DerivedDescription
                                label is "Description"
                                display as text
                column2
                    RoutingApprovalLevel
                        label is "CurrentApprovalLevel"
                    RoutingCode.FinalApproverSelectionMethod
                column3
                    visible when (DisplayResponsiblePerson)
                        paragraph
                            ResponsiblePerson.Employee.PresentationNameSnapshot
                                label is "CurrentApprover"
                            button of "Reassign"
                                valid when (ReassignApproverValid)
                                action is PendingApproval.ReassignApprover
                    visible when (ResponsibleTeamEntered)
                        paragraph
                            ResponsibleTeam
                                label is "ApprovalTeam"
                            ResponsibleTeam.Description
                    visible when (DisplayResponsibleRole)
                        paragraph
                            ResponsibleRole
                                label is "CurrentApprovalRole"
                            ResponsibleRole.Description
