MobileMainForm is a Form
    title is "MainForm"
    Layout
        header3 of "VendorInformation"
        single column
            LegalName
            VendorSearchName
                label is "SearchName"
            VendorAccount
                label is "AccountNumber"
            DunAndBradstreetNumber
            LegacyVendor
            Reference1
            Reference2
            GlobalLocationNumber
                label is "G\\L\\N"
                display as text
            visible when (PurchasingVendorExists)
                two column distributed
                    PurchasingVendor.ContactName
                        label is "PurchasingVendorContact"
                        display as text
                    button of "View_\\/UpdatePurchasingDetails"
                        link is MPurchasingVendorNav
                        display as link
        header3 of "TaxInformation"
        two column distributed
            TaxIDType
            TaxIDType.Description
                no label
                display as text
        two column distributed
            column1
                paragraph
                    TaxID
                        display as required when (TaxIDRequired)
                    visible when (HasTaxID)
                        text of "TaxIDEntered"
                            italics
                    visible when (not HasTaxID)
                        text of "TaxIDNotEntered"
                            italics
                TinNot
                    label is "SecondT\\I\\NNoticeReceived"
            column2
                CheckDigitType
                    when value changed
                        refresh TaxIDRequired
                TinVerified
                    label is "SubmittedForVerification"
                    display as text
        header3 of "GIIN_/FATCAInformation"
        two column distributed
            column1
                FATCAId
                    label is "G\\I\\I\\N_\\ID"
                FinancialInstitutionType
                    label is "Type"
                visible when (not TransientSelectISOCountryNumber)
                    ISOCountryNumber
                        label is "Country/\\Jurisdiction"
                visible when (TransientSelectISOCountryNumber)
                    TransientCountry
                        label is "Country/\\Jurisdiction"
                        select is CountriesWithISONumberRel.Countries
            column2
                GIINCategoryCode
                    label is "Category"
                TransientSelectISOCountryNumber
                    label is "SelectCountry/\\Jurisdiction"
        two column distributed
            FATCAPercentage
                label is "F\\A\\T\\C\\A_\\Rate"
                display as required when (W8Verified.No)
            FATCAIncomeCode
                label is "F\\A\\T\\C\\A_\\Code"
                display as required when (W8Verified.No)
        single column
            FATCAAccount
                label is "F\\A\\T\\C\\A_\\Account"
                compact format
                display as required when (W8Verified.No)
        single column
            W8Verified
                label is "W\\8_\\Verified"
        paragraph
            VATRegistrationCountry
                label is "V\\A\\TRegistrationCountry/\\Jurisdiction"
                display as required when (VATRegistrationNumber entered)
            VATRegistrationNumber
                label is "Number"
            button of "Validate"
                visible when (PerformVATValidation)
                action is ValidateVATRegistrationNumber
                display as link
            visible when (ValidateVAT)
                two column distributed
                    VATValidation.VATNumberValid
                        display as text
                    VATValidation.ValidationDate
                        display as text
        two column distributed
            IncomeCode
            IncomeCode.Description
                no label
                display as text
        visible when (AllowWithholdingCodeOverride)
            single column
                text of "Use_\\Vendor_\\Withholding_\\CodesPanelToDefineOverrideWithholdingCodes"
                    italics
        single column
            IncomeWithholding
                label is "IncomeWithholding"
            AllowWithholdingCodeOverride
                label is "AllowOverrideOfCompanyIncomeWithholdingCode"
            ExemptFromSecondaryWithholding
                label is "SecondaryWithholdingExempt"
            SecondaryWithholdingCode1
                label is "SecondaryWithholdingCodes"
            SecondaryWithholdingCode2
                no label
            SecondaryWithholdingCode3
                no label
        header3 of "CurrentAddress"
        visible when (not RecordExists)
            form is MVendorAddress
        visible when (RecordExists)
            single column
                display as text
                    CurrentAddressRel.PostalAddress.DisplayAddressMultiline
                        label is "PostalAddress"
            single column
                button of "ChangeAddress"
                    form invoke is ChangeCurrentAddress
                    display as link
        header2 of "PrimaryContact"
        visible when (ShowEnterableContactFields)
            two column distributed
                column1
                    ContactName
                    PhoneNumber
                    MobileNumber
                    FaxNumber
                    EmailAddress
                        display as required when (EmailAddressRequired)
                column2
                    single column
                        TwitterID
                        SocialNetworkID2
                        SocialNetworkID3
                        SocialNetworkID4
                        SocialNetworkID5
        visible when (not ShowEnterableContactFields)
            display as text
                two column distributed
                    column1
                        single column
                            PrimeVendorContactRel.ContactName
                            PrimeVendorContactRel.FormattedPhoneNumber
                            PrimeVendorContactRel.FormattedMobilePhoneNumber
                            PrimeVendorContactRel.FormattedFaxNumber
                            PrimeVendorContactRel.EmailAddress
                    column2
                        single column
                            PrimeVendorContactRel.TwitterID
                            PrimeVendorContactRel.SocialNetworkID2
                            PrimeVendorContactRel.SocialNetworkID3
                            PrimeVendorContactRel.SocialNetworkID4
                            PrimeVendorContactRel.SocialNetworkID5
        header2 of "Currency"
        two column distributed
            column1
                BalanceCurrency
                    label is "VendorBalance"
                InvoiceCurrency
                    label is "Invoice"
            column2
                RevalueCurrency
                    label is "Revalue"
        header2 of "CustomerInformation"
        two column distributed
            CustomerGroup
                display as required when (Customer entered)
            CustomerGroup.Name
                no label
                display as text
        single column
            button of "NetBalance"
                visible when (HasVendorBalanceRecord)
                link is NetBalances
                display as link
        two column distributed
            Customer
                select is CustomerSelectList
                display as required when (CustomerGroup entered)
            Customer.Name
                no label
                display as text
        single column
            button of "NetBalance"
                visible when (not HasVendorBalanceRecord)
                link is NetBalancesFromCustomer
                display as link
        visible when (EmployeeEntered)
            header2 of "EmployeeInformation"
            two column distributed
                VendorGroup.BusinessGroup.FinanceEnterpriseGroup.HROrganization
                    display as text
                VendorGroup.BusinessGroup.FinanceEnterpriseGroup.HROrganization.Description
                    no label
                    display as text
            two column distributed
                Employee
                    display as text
                Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
