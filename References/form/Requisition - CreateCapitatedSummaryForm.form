CreateCapitatedSummaryForm is a Form
    title is "ViewCreatedRequisition"
    disable field options
    Layout
        display as text
            paragraph
                Company
                Company.Name
                    no label
            single column
                Requisition
                visible when (RequesterEntered)
                    Requester.RequesterFirstLastName
                        label is "Requester"
                visible when (DescriptionEntered)
                    RequisitionDescription
            paragraph
                Buyer
                Buyer.Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
            paragraph
                CapitatedProcedureAmount
                    label is "ProcedureAmount"
                CapitatedComponentChargeAmounts
                    label is "ChargedComponents"
                ExtendedAmountTotal
        visible when (NotSubmittedForSupplier)
            visible when (not Requester.SupplierRequisitionReviewer)
                single column
                    text of "ClickTheSubmitButtonToSubmitTheRequisition;TheRequisitionMustBeSubmittedBeforeAPurchaseOrderCanBeCreated"
                        bold
                        color of green
                    button of "Submit"
                        action is SubmitForSupplier
        visible when (Requester.SupplierRequisitionReviewer)
            visible when (IsForRelease)
                single column
                    text of "ClickTheReleaseButtonToReleaseTheRequisition"
                        bold
                        color of green
                    paragraph
                        button of "Release"
                            action is Release
                        visible when (LineErrorsExist)
                            text of "MissingDistributionsMustBeEnteredBeforeRelease"
                        visible when (HasLinesWithNoLotOrSerial)
                            text of "ComponentLinesExistWithNoSerialOrLotNumberEntered"
                            button of "ComponentLinesWithNoSerialOrLot"
                                link is ComponentLinesWithNoSerialOrLotNav
                                display as link
            visible when (CanQuickCreatePO)
                visible when (not HasPOLines)
                    single column
                        text of "ClickTheButtonBelowToCreateAPurchaseOrder"
                            bold
                            color of green
                        paragraph
                            button of "CreatePO"
                                action is Processed.QuickCreatePOForBillOnly
        single column
            text of "ClickTheLinkBelowToViewTheRequisition."
            button of "Requisition"
                link is RequisitionView
                display as link
