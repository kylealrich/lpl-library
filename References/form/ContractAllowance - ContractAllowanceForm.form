ContractAllowanceForm is a CompositeForm
    is primary
    title is "ContractAllowance"
    context form is AllowanceContext
        background is theme color
    Actions
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is save and close
    Allowance is a Panel
        form is AllowanceMain
    ChangeOrders is a Panel
        visible when (HasChangeOrders)
        list is ChangeOrdersRel.ChangeOrdersForAllowancesDisplay
