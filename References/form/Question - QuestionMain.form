QuestionMain is a Form
    Layout
        single column
            ResponseType
        two column
            Category
                select is BuyerCategories
            SubCategory
                select is BuyerSubCategories
        single column
            AllowResponseAttachment
                label is "AllowAttachmentUploadWithAnswer"
        single column
            visible when (ResponseType.Text)
                ResponseRules
            visible when (ResponseType.Number)
                ResponseRules
            visible when (ResponseType.Date)
                ResponseRules
            visible when (ResponseType.List)
                ResponseRules
            visible when (ResponseType.YesNoText)
                YesNoTextResponseRules
            visible when (ResponseType.YesNo)
                YesNoResponseRules
        single column
            Active
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        header4 of "ContractManagement"
        paragraph
            UsedForContractInterview
                label is "ThisQuestionWillBeUsedInAContractInterview"
            UsedForContractDefaulting
            visible when (not ResponseType.Rebate)
                visible when (not ResponseType.Text)
                    visible when (not ResponseType.Number)
                        visible when (not ResponseType.Date)
                            DefineCorrectAnswer
                                label is "ThisQuestionHasACorrectAnswer"
        visible when (UsedForContractInterview)
            two column
                ContractType
                    select is BuyerContractTypesSelect
                ContractSubtype
                    select is BuyerContractSubtypeSelect
            two column
                ContractClassification
                    select is BuyerContractClassificationSelect
                ContractSubclassification
                    select is BuyerContractSubclassificationSelect
            single column
                QuestionDisplayOrder
                    label is "InterviewDisplayOrder"
                    display only
        visible when (UsedForContractDefaulting)
            two column
                ContractType
                    select is BuyerContractTypesSelect
                ContractSubtype
                    select is BuyerContractSubtypeSelect
            two column
                ContractClassification
                    select is BuyerContractClassificationSelect
                ContractSubclassification
                    select is BuyerContractSubclassificationSelect
