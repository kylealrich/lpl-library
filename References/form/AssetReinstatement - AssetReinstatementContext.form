AssetReinstatementContext is a Form
    title is "AssetReinstatement"
    Layout
        three column distributed
            column1
                paragraph
                    Asset
                        display as text
                    Asset.Description
                        no label
                        display as text
                paragraph
                    Asset.DerivedStatus
                        label is "AssetStatus"
                        display as text
            column2
                paragraph
                    Asset.TagNumber
                        label is "Tag"
                        display as text
                paragraph
                    AssetGroup
                        label is "AssetGroup"
                        display as text
                    AssetGroup.Description
                        no label
                        display as text
            column3
                visible when (Asset.LeasedAsset)
                    paragraph
                        AssetLease.LeaseCompany
                            label is "LeaseCompany"
                            display as text
                        AssetLease.LeaseCompany.Name
                            no label
                            display as text
                    paragraph
                        AssetLease.Lease
                            display as text
                        AssetLease.Lease.Description
                            no label
                            display as text
