AddIssue is an ActionForm
    action is AddIssue
    title is "AddIssue"
    Layout
        header3 of "_"
        single column
            PrmIssueSummary
                label is "Summary"
            PrmIssueDescription
                label is "Description"
                display as required
            PrmResolutionRequiredForTaskCompletion
                label is "ResolutionRequired_for_TaskCompletion"
            paragraph
                PrmTaskName
                    label is "Task"
                    select is TheClose.CloseDetailSelect
                PrmTaskName.TaskName
                    no label
                    display as text
        header2 of "AssignIssue"
        single column
            paragraph
                PrmFinanceTeam
                    label is "Team"
                    select is FinanceTeamSelect
                    show up to 10 characters
                PrmFinanceTeam.Description
                    no label
                    display as text
            paragraph
                PrmTaskOwner
                    label is "PersonResponsible"
                    compact format
                    select is FinanceTeamMemberActiveSelect
                PrmTaskOwner.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                    no label
                    display as text
