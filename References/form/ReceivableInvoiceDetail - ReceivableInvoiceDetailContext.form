ReceivableInvoiceDetailContext is a Form
    Layout
        four column distributed
            column1
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                        display as text
                paragraph
                    button of "<InvoiceDetailGroupField>"
                        link is PortalReceivableInvoiceNav
                        label is "Invoice"
                        header4
                        bold
                        display as link
            column2
                display as text
                    paragraph
                        Customer
                    paragraph
                        DerivedDescription
            column3
                display as text
                    paragraph
                        TransactionDate
                        DueDate
                    paragraph
            column4
                display as text
                    paragraph
                        TransientSignedTransactionAmount
                            label is "InvoiceAmount"
                                header4
                                bold
                            header4
                            bold
                        visible when (TransientSignedOpenAmount entered)
                            TransientSignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of red
                                header4
                                bold
                                color of red
                            visible when (IsNonBaseCurrency)
                                OriginalCurrency
                                    label is "_"
                                    header4
                                    color of red
                        visible when (TransientSignedOpenAmount not entered)
                            TransientSignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of green
                                header4
                                bold
                                color of green
                            visible when (IsNonBaseCurrency)
                                OriginalCurrency
                                    label is "_"
                                    header4
                                    color of green
