CustomerProfile is a Form
    disable field options
    Layout
        visible when (PortalContact)
            visible when (Customer not entered)
                single column
                    text of "CustomerAccessRequestIsPendingApproval"
                        bold
                        italics
            visible when (Customer entered)
                display as text
                    single column
                        Customer.LegalName
                        Customer.TaxID
                            label is "TaxID"
                    paragraph
                        CompanyCustomerRel.TermsCode
                    paragraph
                        Customer.PhoneNumber.SubscriberNumber
                        Customer.PhoneNumber.Extension
                            label is "Ext"
                    visible when (Customer.EmailAddress entered)
                        paragraph
                            button of "<Customer.EmailAddress>"
                                link is "mailto:<Customer.EmailAddress>"
                                display as link
                    paragraph
                        RegistrationStatus
                            display as tag
                                color of green when (RegistrationComplete)
                                color of red when (not RegistrationComplete)
