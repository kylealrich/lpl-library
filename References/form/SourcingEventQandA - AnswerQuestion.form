AnswerQuestion is an ActionForm
    action is Unanswered.AnswerQuestion
    title is "AnswerQuestion"
    Layout
        single column
            Question
                display as text
                use text area
            visible when (HasAttachment)
                Attachment.File
                    label is "QuestionAttachment"
        single column
            Answer
                use text area
        paragraph
            AnswerAttachment.File
                label is "AnswerAttachment"
            Private
