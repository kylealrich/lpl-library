RequisitionLineDistribution is a Form
    is primary
    title is "RequisitionLineDistribution"
    Layout
        two column
            column1
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Requisition
                        label is "RequisitionNumber"
                        display only
                paragraph
                    RequisitionLine
                        label is "LineNumber"
                paragraph
                    RequisitionLineDistribution
                paragraph
                    AddOnCharge
                    AddOnCharge.Description
                        no label
                        display as text
            column2
                visible when (not RequisitionLine.DistributionAccountExists)
                    RequisitionLine.UndistributedPercent
                        label is "RemaningToBeDistributed"
                        display as text
                visible when (DistributionByPercent)
                    RequisitionLine.UndistributedPercent
                        label is "RemaningToBeDistributed"
                        display as text
                visible when (DistributionByQuantity)
                    RequisitionLine.UndistributedQuantity
                        label is "RemaningToBeDistributed"
                        display as text
                visible when (DistributionByAmount)
                    RequisitionLine.UndistributedAmount
                        label is "RemaningToBeDistributed"
                        display as text
        blank line
        single column
            DistributionAccount
                compact format
        paragraph
            AssetInformation.AssetTemplate
                select is AssetTemplates
            AssetInformation.Asset
                select is AssetCodes
        single column
            visible when (RequisitionLine.DistributionBy.ByPercent)
                DistributionPercent
            visible when (RequisitionLine.DistributionBy.ByAmount)
                DistributionQuantity
            visible when (RequisitionLine.DistributionBy.ByPercent)
                DistributionAmount
