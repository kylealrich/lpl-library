AssetImpairmentContext is a Form
    restrict action Create
    restrict action Delete
        when (ReleasedTransactionsExist)
    Layout
        single column
            paragraph
                Asset
                    display as text
                Asset.Description
                    no label
            paragraph
                Description
            paragraph
                visible when (IsUnreleased)
                    ImpairmentDate
                visible when (not IsUnreleased)
                    ImpairmentDate
                        display as text
            paragraph
                visible when (IsUnreleased)
                    PostingDate
            paragraph
                Operator
            paragraph
                Attachment
                    compact format
                visible when (HasAttachment)
                    button of "View"
                        view Attachment.File
                        display as link
                visible when (ApprovalAllowRelease)
                    button of "Release"
                        action is ReleaseImpairment
                visible when (ApprovalAllowReset)
                    button of "ResetImpairment"
                        action is ResetImpairment
                visible when (ApprovalAllowAdjustmentReset)
                    button of "ResetAdjustment"
                        action is ResetImpairmentAdjustment
                visible when (Asset.SubmitForApprovalValid)
                    button of "SubmitForApproval"
                        action is SubmitForApproval
