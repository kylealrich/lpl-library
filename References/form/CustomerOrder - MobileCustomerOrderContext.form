MobileCustomerOrderContext is a Form
    title is "CustomerOrderContext"
    restrict action Unreleased.Create
    restrict action Unreleased.Delete
    Layout
        single column
            paragraph
                Company
                    display as text
                Company.Name
                    no label
                    display as text
            paragraph
                visible when (not Company.ManuallyNumbered)
                    CustomerOrder
                        label is "Order"
                        display as text
                visible when (Company.ManuallyNumbered)
                    CustomerOrder
                        label is "Order"
                visible when (not OnProformaPaymentHold)
                    Status
                        display as text
                visible when (OnProformaPaymentHold)
                    Status
                        display as text
                    text of "RequiredProformaPayment"
                        bold
                visible when (HasProformaInvoice)
                    button of "<DerivedProformaInvoice>"
                        view ProformaInvoiceRel.Attachment.File
                        label is "ProformaInvoice"
                        left align
                        display as link
            paragraph
                InventoryLocation
                    label is "Location"
                InventoryLocation.Name
                    no label
                    display as text
            paragraph
                Currency
                Currency.Description
                    no label
                    display as text
            paragraph
                OrderEntryOrderType
                    label is "OrderType"
                OrderEntryOrderType.Description
                    no label
                    display as text
            paragraph
                BillingProcessLevel
                    label is "ProcessLevel"
                BillingProcessLevel.Name
                    no label
                    display as text
