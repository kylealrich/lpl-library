MobileItemDetails is a Form
    title is "Item"
    Layout
        display as text
            two column table
                column1
                    visible when (Item.Description2 entered)
                        Item.Description2
                column2
                    visible when (Item.HasDesc3)
                        Item.Description3
                            label is "FullDescription"
            single column
                visible when (Vendor entered)
                    Vendor
                paragraph
                    visible when (VendorItem entered)
                        VendorItem
                        VendorItem.VendorItemDescription
                            no label
            two column table
                column1
                    ItemType
                column2
                    ServiceCode
            single column
                ItemLocationRel.MobileStockOnHandQuantity
                    label is "AvailableStockOnHand"
            two column table
                column1
                    RequestedDeliveryDate
                column2
                    LateDeliveryDate
            paragraph
                visible when (Manufacturer.ManufacturerCode entered)
                    Manufacturer.ManufacturerCode
                    Manufacturer.Description
                        label is "Name"
                    Manufacturer.ManufacturerDivision
                        label is "Division"
                visible when (ManufacturerNumber entered)
                    ManufacturerNumber
                        label is "Number"
