BasicContextForm is a Form
    Layout
        four column distributed
            column1
                InventoryIntelligenceProcessor.Employee.ResourcePicture.File
                    display as portrait image
                        missing image is random background
                            foreground text is "<InventoryIntelligenceProcessor.Employee.Name.Initials>"
            column2
                visible when (InventoryIntelligenceProcessor not entered)
                    paragraph
                        InventoryIntelligenceProcessor
                            label is "SpecialistID"
                        InventoryIntelligenceProcessor.Employee.PresentationNameSnapshot
                            label is "SpecialistName"
                            display as text
                visible when (InventoryIntelligenceProcessor entered)
                    paragraph
                        InventoryIntelligenceProcessor.Employee.FirstLastNameID
                            label is "Employee"
                            display as text
                        button of icon.profile
                            link is EmployeeNav
                HROrganization.HROrgAndDescription
                    label is "HROrganization"
                    display as text
            column3
                paragraph
                    InventoryIntelligenceProcessor.Employee.EmployeeWorkEmailAddress
                        label is "WorkEmail"
                        display as text
                    button of icon.mail
                        visible when (InventoryIntelligenceProcessor.Employee.EmployeeWorkEmailAddressExists)
                        link is "mailto:<InventoryIntelligenceProcessor.Employee.EmployeeWorkEmailAddress>"
                DefaultAccess
            column4
                paragraph
                    InventoryIntelligenceProcessor.Employee.EmployeeWorkTelephone
                        label is "WorkPhone"
                        display as text
                    button of icon.phone
                        visible when (InventoryIntelligenceProcessor.Employee.EmployeeWorkPhoneExists)
                        link is "tel:<InventoryIntelligenceProcessor.Employee.EmployeeWorkTelephone>"
