ClosePeriodTaskCubeSearch is a Form
    Layout
        three column distributed
            column1
                TaskName
                    label is "Task"
                ParentTask.TaskName
                    label is "Parent"
                TaskStatus
                    label is "Status"
                ScheduleForTask.DueDate
                    label is "DueDate"
            column2
                FinanceTeam
                    label is "Team"
                TaskOwner
                    label is "Owner"
                RequiresApproval
                RequireSupportingDoco
                    label is "RequiresSupportingDocumentation"
                RequireJournalEntry
                    label is "RequiresJournalEntryDetail"
            column3
                TaskCompany
                    label is "Company"
                Priority
                Risk
                visible when (CloseManagementGroup.AllowOneTimeTasks)
                    OneTimeTask
        visible when (CloseManagementGroup.HasTaskTypes)
            three column distributed
                column1
                    PrimaryTaskType
                        label is "PrimaryType"
                        select is PrimaryCloseTaskTypeSelect
                column2
                    SecondaryTaskType
                        label is "SecondaryType"
                        select is SecondaryCloseTaskTypeSelect
                column3
                    TertiaryTaskType
                        label is "TertiaryType"
                        select is TertiaryCloseTaskTypeSelect
