MobileVendorDetailForm is a Form
    title is "Details"
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        display as text
            paragraph distributed
                VendorReturn
                VendorReturnLine
                    label is "Line"
                DocumentType
                    label is "DocumentType"
            paragraph
                Item
        visible when (VendorReturnLine.ItemLocationRel.LotTracked.LotRequiredAtReceipt)
            two column
                column1 of 50%
                    Lot
                    LotExpirationDate
                column2 of 50%
                    Sublot
                    LotOnHold
        visible when (VendorReturnLine.ItemLocationRel.SerialTracked.SerialRequiredAtReceipt)
            paragraph
                Serial
        visible when (VendorReturnLine.ItemLocationRel.BinTracked)
            paragraph
                Bin
                    select is BinsWithStockOnHandRel.MobileBinSelect
        paragraph
            visible when (not VendorReturnLine.ItemLocationRel.SerialTracked.SerialRequiredAtReceipt)
                Quantity
            visible when (IsSerialRequiredAtReceipt)
                Quantity
                    display as text
            UnitOfMeasure
                no label
                display as text
        paragraph
            visible when (VendorReturnLine.ItemLocationRel.IsCatchWeightItem)
                SecondaryQuantity
                    label is "FromStock"
