MobileItemClassesAndCodes is a Form
    title is "ClassesAndCodes"
    Layout
        paragraph
            FreightClass
                select is MobileMajorClassList
            FreightClass.Description
                no label
                display as text
        paragraph
            MajorInventoryClass
                label is "InventoryClassMajor"
                select is MobileMajorInventoryClasses
            MajorInventoryClass.Description
                no label
                display as text
        paragraph
            MinorInventoryClass
                label is "Minor"
                select is MobileMinorInventoryClasses
            MinorInventoryClass.Description
                no label
                display as text
        paragraph
            MajorPurchasingClass
                label is "PurchasingClassMajor"
                select is MobileMajorPurchasingClasses
            MajorPurchasingClass.Description
                no label
                display as text
        paragraph
            MinorPurchasingClass
                label is "Minor"
                select is MobileMinorPurchasingClasses
            MinorPurchasingClass.Description
                no label
                display as text
        paragraph
            MajorSalesClass
                label is "SalesClassMajor"
                select is MobileMajorSalesClasses
            MajorSalesClass.Description
                no label
                display as text
        paragraph
            MinorSalesClass
                label is "Minor"
                select is MobileMinorSalesClasses
            MinorSalesClass.Description
                no label
                display as text
        blank line
        paragraph
            ICNCode
                select is MobileICNAndUOMSelect
        paragraph
            HazardCode
                select is MobileActiveHazardCodes
            HazardCode.Description
                no label
                display as text
        paragraph
            CommodityCode
                select is MobileCommCodesList
            CommodityCode.CcDescription
                no label
                display as text
        paragraph
            UNSPSCCode
                compact format
                select is MobileUNSPSCCodeList
            UNSPSCCode.LongDescription
                no label
                display as text
