AssetBookTransferForm is a Form
    is primary
    title is "AssetBookTransfer"
    Layout
        paragraph
            Asset
                display as text
            Asset.Description
                no label
                display as text
            Asset.DerivedStatus
                no label
                display as text
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                    display as text
                Asset.AssetLease.LeaseCompany.Name
                    no label
                    display as text
            paragraph
                Asset.AssetLease.Lease
                    display as text
                Asset.AssetLease.Lease.Description
                    no label
                    display as text
        visible when (HasTagNumber)
            paragraph
                Asset.TagNumber
                    display as text
        paragraph
            AssetTransfer.TransferDate
                display as text
            AssetTransfer.TransferStatus
                display as text
        paragraph
            AssetTransfer.CreationDate
                display as text
            AssetTransfer.CreatedBy
                display as text
        paragraph
            Method
                display as text
            Method.Description
                no label
                display as text
        paragraph
            Life
                display as text
            LifeRemaining
                display as text
        paragraph
            InServiceDate
                display as text
            Convention
                display as text
        blank line
        two column
            column1
                header3 of "TransferFrom"
                paragraph
                    Book
                        display as text
                    Book.Description
                        no label
                        display as text
                    Currency
                        display as text
                Basis
                    display as text
            column2
                header3 of "TransferTo"
                paragraph
                    ToBook
                        display as text
                    ToBook.Description
                        no label
                        display as text
                    ToBookCurrency
                        label is "ToCurrency"
                        display as text
                paragraph
                    DerivedToBasis
                        label is "ToBasis"
                        display as text
