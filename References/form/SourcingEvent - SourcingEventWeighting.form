SourcingEventWeighting is a Form
    title is "Event-Weighting"
    Layout
        blank line
        single column
            DefaultWeightingToLines
                label is "DefaultEventWeightingToLines"
            text of "Note:_BuyerWeightingIsNotAvailableAtTheLineLevel."
                bold
        header2 of "EventWeightingCriteria"
        four column
            WeightingCriteria.PriceWeighting
                display as required when (PriceWeightingRequired)
                when value changed
                    refresh DeliveryWeightingRequired
            WeightingCriteria.DeliveryWeighting
                display as required when (DeliveryWeightingRequired)
                when value changed
                    refresh PriceWeightingRequired
            DeliveryScoringOption
                no label
            visible when (DeliveryScoringOption.OnRequestedDeliveryDate)
                DeliveryScoreAllocation
                    label is "ScoreAllocation_forDeliveryDatesNot_onRequestedDeliveryDate"
        two column
            WeightingCriteria.DiversityWeighting
            DiversityScoreAllocation
                label is "ScoreAllocation_forNonDiverseSuppliers"
        four column
            TotalQuestionWeighting
            TotalBuyerWeighting
            visible when (EventExists)
                button of "<DerivedBuyerWeighting>"
                    link is BuyerWeightingInformation
                    left align
                    display as link
            TotalWeightingByEvent
        visible when (not LineWeightingsEntered)
            text of "Note:_WeightingWillBeAllocatedEquallyForEachLineWhenLineWeightingsAreNotDefined."
                bold
        visible when (LineWeightingsEntered)
            header2 of "TotalLineWeightingOverridePercentage_forAllLines"
            single column
                TotalLineWeighting
