RecallNoticeActivity is a CompositeForm
    title is "NoticeActivity"
    context form is RecallActivityContext
        background is theme color
    Actions
        navigation is AuditReport
            action icon is print
            label is "PrintActivity"
    TaskActivityByProduct is a Panel
        visible when (NonManualTasksExist)
        list is RecallNoticeTaskProduct set.RecallNoticeTaskActivity
    ManualTaskActivity is a Panel
        visible when (ManualTasksExist)
        list is RecallNoticeTask set.RecallNoticeTaskOnlyActivity
    ActionSummary is a Panel
        title is "ResolutionSummary"
        visible when (HasResolutions)
        list is RecallProductItemAction set.RecallProductItemActionSummary
