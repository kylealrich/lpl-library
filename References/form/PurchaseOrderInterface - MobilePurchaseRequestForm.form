MobilePurchaseRequestForm is a CompositeForm
    title is "PurchaseRequest"
    context form is MobilePurchaseRequestContext
    show panel control on left
    Actions
        action is save
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is MobileMain
    LineOptions is a Panel
        form is MobileLineOptions
    SourceInformation is a Panel
        form is MobileSourceInformation
    Comment is a MultiListPanel
        title is "Comments<CommentCount>"
        list is PurchaseOrderInterfaceCommentRel.MobilePurchaseOrderInterfaceComments
        list is RequisitionCommentRel.MobileRQCommentsForPOInterface
            visible when (HasRequisitionComment)
        list is RequisitionLineCommentRel.MobileRQLineCommentsForPOInterface
            visible when (HasRequisitionLineComment)
    UserFields is a Panel
        form is UserFieldsForm
