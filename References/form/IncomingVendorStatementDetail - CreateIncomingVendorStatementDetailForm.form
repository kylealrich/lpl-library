CreateIncomingVendorStatementDetailForm is an ActionForm
    action is Create
    title is "CreateNewIncomingVendorStatement"
    Layout
        StatementDate
            label is "StatementDate"
            when value changed
                refresh StatementHeaderExists
        VendorGroup
            label is "VendorGroup"
        Vendor
            label is "Vendor"
            when value changed
                refresh StatementHeaderExists
        InvoiceNumber
            label is "InvoiceNumber"
        InvoiceDate
            label is "InvoiceDate"
        PurchaseOrder
            label is "PurchaseOrder"
        InvoiceAmount
            label is "InvoiceAmount"
        DueDate
            label is "DueDate"
        visible when (StatementHeaderExists)
            text of "StatementHeaderWithThisVendorGroupVendorDateExists"
        visible when (not StatementHeaderExists)
            text of "StatementHeaderDoesNotExist"
