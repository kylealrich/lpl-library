BankStatementContextForm is a Form
    title is "BankStatement"
    Layout
        visible when (false)
            AssignLocalPostingPeriod
        three column distributed
            column1
                paragraph
                    BankStatement
                        label is "StatementNumber"
                        display as text
                    visible when (not CanUpdateStatement)
                        StatementDate
                            display as text
                    visible when (CanUpdateStatement)
                        StatementDate
                PostingStatus
                    display as text
            column2
                paragraph
                    CashManagementAccount
                        display as text
                    CashManagementAccount.Title
                        no label
                        display as text
                EntryMethod
                    display as text
            column3
                paragraph
                    StatementStatus
                        display as text
                StatementCurrency
                    display as text
        single column
            visible when (NetLineAmountOutOfBalance)
                StatementOutOfBalanceErrorMessage
                    no label
                    display as tag
                        color of red
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditInFailure)
                text of "BudgetsExceeded;CouldNotReleaseAllDistributions"
                    bold
                    color of red
