AssetTypeAllocationContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Company
                        select is Companies
                    Company.GeneralLedgerCompany.Name
                        no label
                        display as text
                    Company.GeneralLedgerCompany.Currency
                        no label
                        display as text
                paragraph
                    AssetTypeAllocation.StartDate
                        label is "Date"
                    EndDate
                        label is "To"
            column2
                paragraph
                    AssetType
                        label is "Type"
                        compact format
                        select is AssetTypesByCompany
                    AssetType.Description
                        no label
                        display as text
                paragraph
                    Status
                        display as text
            column3
                paragraph
                    TotalPercentFromDetails
                        label is "TotalPercent"
                            bold
