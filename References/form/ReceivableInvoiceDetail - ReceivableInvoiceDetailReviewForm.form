ReceivableInvoiceDetailReviewForm is a Form
    Layout
        display as text
            four column distributed
                paragraph
                    Company.RepresentativeText
                    visible when (IsNonBaseCurrency)
                        Company.Currency
                            label is "Currency"
                TransactionDate
                Status
                Description
            four column distributed
                Customer.RepresentativeText
                GeneralLedgerDate
                ReceivableGeneralLedgerCode
                    label is "GlobalLedgerCode"
                BatchNumber
            four column distributed
                ReceivableProcessLevel.RepresentativeText
                DiscountDate.DiscDate[1]
                    label is "DiscountDate"
                DerivedDiscount1Amount
                    label is "DiscountAmount"
                Project
            four column distributed
                ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                ReceivableInvoiceDetail.Invoice
                ReceivableInvoiceDetail.PaymentSeq
                    label is "Sequence"
                DueDate
            four column distributed
                TransientSignedTransactionAmount
                TransientSignedOpenAmount
                ApplicationAmount.CurrencyAmount
                    label is "AppliedAmount"
                AdjustmentAmount.CurrencyAmount
                    label is "AdjustmentAmount"
            four column distributed
                visible when (IsNonBaseCurrency)
                    OriginalCurrency
                    InvoiceAmount.FunctionalAmount.EnteredCurrencyRate
                    SingleSpace
                        no label
                    SingleSpace
                        no label
            four column distributed
                visible when (IsNonBaseCurrency)
                    InvoiceAmount.FunctionalAmount.EnteredCurrencyAmount
                        label is "InvoiceFunctionalAmount"
                    BaseOpenAmount
                    ApplicationAmount.FunctionalAmount.EnteredCurrencyAmount
                        label is "ApplicationFunctionalAmount"
                    AdjustmentAmount.FunctionalAmount.EnteredCurrencyAmount
                        label is "AdjustmentFunctionalAmount"
