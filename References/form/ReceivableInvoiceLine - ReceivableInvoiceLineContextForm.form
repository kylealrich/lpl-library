ReceivableInvoiceLineContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                column2
                    ReceivableInvoice.Customer.RepresentativeText
                        label is "Customer"
                column3
                    ReceivableInvoiceType
                        label is "Type"
                column4
                    ReceivableInvoice
                        label is "InvoiceNumber"
            visible when (ReceivableInvoiceLine entered)
                four column distributed
                    column1
                        ReceivableInvoiceLine
                            label is "Line"
                    column2
                        ExtendedAmount
                            label is "ExtendedAmount"
                    column3
                        TaxAmount
                            label is "TaxAmount"
                    column4
                        TotalAmount
                            label is "TotalAmount"
