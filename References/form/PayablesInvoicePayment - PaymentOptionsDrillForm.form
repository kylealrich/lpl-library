PaymentOptionsDrillForm is a Form
    title is "PaymentOptions"
    Layout
        two column distributed
            column1
                paragraph
                    PayVendor
                        display as text
                    PayVendor.VendorName
                        no label
                        display as text
                RemitToCode
                    display as text
                DueDate
                    display as text
                DiscountDate
                    display as text
                Enclosure
                    display as text
                SeparatePayment
                    display as text
                PayImmediately
                    display as text
            column2
                InvoiceGroup
                    display as text
                CashCode
                    display as text
                BankTransactionCode
                    display as text
                DiscountCode
                    display as text
                FirstPayablesOnHoldHoldCode
                    display as text
                IncomeCode
                    display as text
                paragraph
                    VendorPaymentAmount
                        display as text
                    VendorPaymentCurrency
                        display as text
                visible when (BankCheckAmountEntered)
                    NetVendorPaymentAmount
                        display as text
