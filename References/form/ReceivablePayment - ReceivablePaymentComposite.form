ReceivablePaymentComposite is a CompositeForm
    title is "ReceivablePayment_-<PaymentNumber>forBatch<ReceivablePaymentHeader>"
    context form is ReceivablePaymentContextForm
        background is theme color
    Actions
        action is GenerateReceipt
            mouse over text is "GenerateIDMPaymentReceipt"
            hide when invalid
        action is EmailReceipt
            mouse over text is "EmailIDMPaymentReceipt"
            hide when invalid
        action is PrintReceipt
            mouse over text is "PrintIDMPaymentReceipt"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Main is a Panel
        form is ReceivablePaymentMain
    Remittances is a Panel
        visible when (TypeOfPayment.CustomerPayment)
        list is ReceivablePaymentRemittance set.ReceivablePaymentRemittanceList2
    CashDetails is a Panel
        visible when (Company.DetailedCashDistributions)
        list is ReceivablePaymentCashDetail set.CashDetails
    Comments is a Panel
        visible when (TypeOfPayment.CustomerPayment)
        list is CompanyCustomerCommentRel.ARPaymentCommentsList
    Distributions is a Panel
        visible when (TypeOfPayment.NonArPayment)
        list is NonARReceivableGLDistributionRel.ReceivableDistributionListDisplayOnly
    NonARComments is a Panel
        visible when (TypeOfPayment.NonArPayment)
        list is CompanyCustomerCommentRel.NonARPaymentCommentsList
    Attachments is a Panel
        list is ReceivablePaymentAttachment set.primary
    PriorApplications is a Panel
        visible when (PaymentHasApplications)
        list is ReceivableApplicationRel.ReviewPaymentApplicationsGenericTitleList
