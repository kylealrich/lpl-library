RSSLPLRequisitionLineMain is a Form
    title is "Main"
    Layout
        two column distributed
            paragraph
                Item
                    display as required
                    when value changed
                        refresh CommodityCodeRequired
                        refresh DescriptionRequired
                        refresh MajorPurchasingClassRequired
                        refresh PurchaseTaxCodeRequired
                Item.Description2
                    no label
                    display as text
            paragraph
                Description
                    display as required when (DescriptionRequired)
                visible when (RecallProductItemForItemRelExists)
                    button of "Recall" with icon.CSFRecall
                        link is RecallNav
                        display as link
        visible when (OriginalItemExists)
            two column distributed
                column1
                    OriginalItem
                        label is "OriginalItem"
                            italics
                        display only
                column2
                    OriginalItemRel.Description
                        label is "OriginalItemDescription"
                            italics
                        display as text
        two column distributed
            paragraph
                Quantity
                    raise yellow alert when (HasKilledQuantity)
                        mouse over text is "KilledQuantityOf<KilledQuantity>Exists"
                    raise blue alert when (DerivedMaximumRequisitionQuantity entered)
                        mouse over text is "<DerivedMaximumRequisitionQuantity>"
                    display as required when (QuantityRequired)
                visible when (SetToDisplayOnlyTransactionUOM)
                    EnteredUOM
                        label is "UOM"
                        display only
                        select is ValidRequisitionUnitsOfMeasure
                        display as required when (EnteredUOMRequired)
                visible when (not SetToDisplayOnlyTransactionUOM)
                    EnteredUOM
                        label is "UOM"
                        select is ValidRequisitionUnitsOfMeasure
                        display as required when (EnteredUOMRequired)
            paragraph
                visible when (not IsCostUpdateProhibited)
                    TransactionUnitCost
                        label is "UnitCost"
                        display as required when (TransactionUnitCostRequired)
                visible when (IsCostUpdateProhibited)
                    TransactionUnitCost
                        label is "UnitCost"
                        display only
                        display as required when (TransactionUnitCostRequired)
                visible when (RSSLPLDisplayCurrencyCode)
                    TransactionCurrencyCode
                        label is "Currency"
                        when value changed
                            refresh RSSLPLRequireVendor
        two column distributed
            visible when (DisplayVendorItem)
                VendorItem
                    select is VendorItemsForItem
                    display as required when (RSSLPLRequireVendorItem)
            visible when (DisplayDeliverTo)
                DeliverTo
                    display as required when (RequesterRel.RequireDeliverTo)
        two column distributed
            paragraph
                DistributionBy
                InventoryTransactionType
                    display as text
            visible when (DisplayDistributionCode)
                DistributionCode
        two column distributed
            paragraph
                visible when (DisplayRequestedDeliveryDate)
                    RequestedDeliveryDate
                        display as required when (RequesterRel.RequireRequestedDeliveryDate)
                LateDeliveryDate
            paragraph
                visible when (RSSLPLDisplayAllocationPriorityLevel)
                    paragraph
                        TransientAllocationPriorityLevel
                            label is "Priority"
                            initial value is RSSLPLAllocationPriorityLevelRel.AllocationPriorityLevel
                        TransientAllocationPriorityLevel.Description
                            no label
                            display as text
                visible when (RSSLPLDisplayPriority)
                    AllocationPriority
                        label is "Priority"
            CreatePurchaseOrder
                when value changed
                    refresh PurchaseTaxCodeRequired
                    refresh RSSLPLRequireVendor
            visible when (DisplayDeliveryMethod)
                DeliveryMethod
        two column distributed
            column1
                ItemType
                    when value changed
                        refresh CommodityCodeRequired
                        refresh ContractLineRequired
                        refresh EnteredUOMRequired
                        refresh MajorPurchasingClassRequired
                        refresh PurchaseTaxCodeRequired
                        refresh ServiceCodeRequired
                        refresh DisplayServiceInfo
                        refresh DisplayServiceCode
                        refresh RSSLPLRequireVendor
            column2
                paragraph
                    visible when (DisplayCostOption)
                        visible when (not IsCostUpdateProhibited)
                            CostOption
                                when value changed
                                    refresh PurchaseTaxCodeRequired
                                    refresh TransactionUnitCostRequired
                        visible when (IsCostUpdateProhibited)
                            CostOption
                                display as text
                    OverrideCost
                        display as text
        display as text
            visible when (SourcingEventRequired)
                two column distributed
                    paragraph
                        visible when (DisplayVendor)
                            Vendor
                                display as required when (RSSLPLRequireVendor)
                            Vendor.VendorName
                                no label
                    paragraph
                        visible when (DisplayPurchaseFrom)
                            PurchaseFromLocation
                                label is "PurchaseFrom"
                            PurchaseFromLocation.VendorName
                                no label
        visible when (not SourcingEventRequired)
            two column distributed
                paragraph
                    visible when (DisplayVendor)
                        Vendor
                            display as required when (RSSLPLRequireVendor)
                        Vendor.VendorName
                            no label
                            display as text
                paragraph
                    visible when (DisplayPurchaseFrom)
                        PurchaseFromLocation
                            label is "PurchaseFrom"
                            select is NonRemitToActivePurchaseFromLocations
                        PurchaseFromLocation.VendorName
                            no label
                            display as text
        visible when (DisplayServiceInfo)
            two column distributed
                visible when (DisplayServiceCode)
                    ServiceCode
                        display as required when (ServiceCodeRequired)
                        when value changed
                            refresh QuantityRequired
                visible when (not LineExists)
                    two column distributed
                        Contract
                        EnteredContractLine
                            label is "ContractLine"
                            select is ContractLinesForAServiceItemRQ
                            display as required when (ContractLineRequired)
                visible when (LineExists)
                    display as text
                        paragraph
                            Contract
                            ContractLine
                            Tier
                            Preferred
                            visible when (Requisition.ForCapitatedProcedure)
                                visible when (not IsACapitatedProcedure)
                                    ContractCapitatedComponentGroupRel.Name
                                        label is "ComponentGroup"
                                    visible when (CapitatedProcedureLine entered)
                                        first ProcedureForThisRequisitionRel.Description
                                            label is "ForProcedure"
                                    CapitatedProcedureLevel
                                        label is "ProcedureLevel"
            paragraph
                visible when (IsACapitatedProcedure)
                    visible when (PrimaryOrRevisionProcedure)
                        visible when (ProcedureHasComponents)
                            CapitatedProcedureLevel
                                display as text
                        visible when (not ProcedureHasComponents)
                            visible when (IsUnreleased)
                                CapitatedProcedureLevel
                            visible when (not IsUnreleased)
                                CapitatedProcedureLevel
                                    display as text
                    visible when (PrimaryProcedure)
                        single column
                            text of "ProcedureIsPrimary"
                                bold
                    visible when (RevisionProcedure)
                        single column
                            text of "ProcedureIsRevision"
                                bold
        visible when (false)
            PurchaseTaxCode
                display as required when (PurchaseTaxCodeRequired)
            MajorPurchasingClass
                show up to 10 characters
                display as required when (MajorPurchasingClassRequired)
            CommodityCode
                display as required when (CommodityCodeRequired)
            TransientRSSLPLRequisitionLineScreen
        visible when (actor.agent(Employee).Employee.Requester.ItemNoteAllowed)
            two column distributed
                EAMDescription
                    label is "ItemNote"
                    use text area of 3 lines
