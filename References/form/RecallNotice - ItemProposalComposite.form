ItemProposalComposite is a CompositeForm
    title is "ItemProposal<DerivedRecallNotice>"
    context form is ItemProposalContext
        background is theme color
    Actions
        action is Pending.ApproveProposedItems
            hide when invalid
        action is Pending.ApproveProposedItemsPendingTrial
            label is "ApprovePendingTrial"
            hide when invalid
        action is Pending.RejectProposedItems
            label is "Reject"
            hide when invalid
        action is Pending.ApproveProposedItemsWithOpenReviews
            hide when invalid
        action is Pending.RejectProposedItemsWithOpenReviews
            hide when invalid
        navigation is NewItemProposalReport
            hide when invalid
        navigation is CreateTrialRequisitions
            hide when invalid
        navigation is ItemsInProcessNav
            label is "ItemsInProcess"
            hide when invalid
        action is Pending.AllTrialRequisitionsCreated
            hide when invalid
        action is CopyFromAnotherTrialItemNotice
            hide when invalid
        action is Pending.UpdateTrialEndDate
            hide when invalid
        action is Pending.CancelTrial
            hide when invalid
        navigation is MainNoticeNav
            label is "GoToNotice"
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    General is a Panel
        form is ItemProposalGeneral
    Products is a Panel
        title is "ProposedNewItems<ProductCount>"
        visible when (DisplayItemDetailsOnForm)
        list is ProductItemProposalRel.ItemProposalDetails
    ProposedItemReview is a Panel
        title is "Reviewers<ReviewerIndicator>"
        visible when (ItemProposal)
        list is RecallNoticeTask set.ProposedItemReview
            helper list is RecallUserHelperListRel.ActiveRecallReviewerHelperList
                action is AttachToRecallNoticeItemProposal
                valid when (UnapprovedItemProposal)
    TrialItemCompaniesAndLocations is a Panel
        visible when (CanDisplayTrialItemCompaniesAndLocations)
        list is TrialItemCompaniesAndLocations set.TrialItemCompaniesAndLocationsList
    References is a Panel
        title is "References<ReferenceCount>"
        list is RecallNoticeReference set.RecallNoticeReferences
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is RecallComment set.RecallComments
    QAndA is a Panel
        title is "Q&A<QandACount>"
        visible when (HasRecallQandA)
        list is RecallNoticeQandA set.ItemProposalQAndAList
