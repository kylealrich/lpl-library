CreateForecast is a WizardForm
    use for action New.Create
    title is "CreateCashForecast"
    summary form is CreateForecastWizardSummary
    show panel navigation
        last panel navigation is CashForecastPageNav
            next button title is "Finish"
    show steps
    General is a Panel
        mouse over text is "DefineCashForecastInformation"
        panel text is "EnterBasicForecastInformation"
        completed when (CashForecast entered)
        form is CashForecastWizardForm
        save on next
    Accounts is a Panel
        mouse over text is "DefineAccountsToIncludeInCashForecast"
        panel text is "Select_AccountsToIncludeInForecast"
        completed when (HasCashForecastAccounts)
        raise yellow alert when (not HasCashForecastAccounts)
            mouse over text is "No_AccountsSelected"
        list is CashForecastAccount set.CashForecastAccountWizard
            cannot be empty
                "MustDefineAccountsToUseInCashForecast"
            helper list is ActiveSecurityCashManagementAccountRel.CashManagementAccountHelper
                action is CreateForecastAccount
                    invoked.PrmCashManagementGroup = CashManagementGroup
                    invoked.PrmCashForecast = CashForecast
    Categories is a Panel
        mouse over text is "DefineCategoriesToIncludeInCashForecast"
        panel text is "Select_CategoriesToIncludeInForecast"
        completed when (HasCashForecastCategories)
        raise yellow alert when (not HasCashForecastCategories)
            mouse over text is "No_CategoriesSelected"
        list is CashForecastCategoryByDisplayOrderRel.CashForecastCategoryWizard
            cannot be empty
                "MustDefineCategoriesToUseInCashForecast"
            helper list is CashTransactionCategoryRel.CashTransactionCategoryHelper
                action is CreateForecastCategory
                    invoked.PrmCashManagementGroup = CashManagementGroup
                    invoked.PrmCashForecast = CashForecast
