CashBatchExceptionPayments is a CompositeForm
    title is "CashBatchExceptionPayment<BatchAndCompanyTitle>"
    context form is CashBatchExceptionContextForm
        background is theme color
    restrict action OpenBatchUnreleased.Create
    Actions
        action is OpenBatchUnreleased.Release
            action icon is release
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is OpenBatchUnreleased.Delete
            label is "_"
        action is refresh
            label is "_"
    CustomerPayments is a Panel
        list is ReceivablePayment set.CashPaymentExceptionList
