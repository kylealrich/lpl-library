AddToRequisition is an ActionForm
    action is AddToRequisition
    title is "AddLineToRequisition"
    Layout
        display as text
            two column
                PrmCompany
                PrmRequisition
            single column
                Contract.RepresentativeText
            two column
                ItemDescription
                VendorItem
                UOM
        two column
            paragraph
                PrmQuantity
                text of "QuantityWillDefaultTo1IfNotEntered"
            visible when (HasChargeableComponentItem)
                visible when (RequisitionContextRel.ComponentsNeedProcedureLevel)
                    paragraph
                        PrmPrimary
                        text of "Or"
                        PrmRevision
        two column distributed
            column1
                visible when (CanDisplaySerialNumber)
                    PrmSerialNumber
                visible when (CanDisplayManufacturingDate)
                    PrmManufacturingDate
                visible when (CanDisplayExpirationDate)
                    PrmExpirationDate
            column2
                visible when (CanDisplayLot)
                    PrmLot
                visible when (CanDisplayGTIN)
                    PrmGTIN
        single column
            PrmBillCode
            text of "DefaultBillCodeFromRequisitionIs<PrmRequisition.DefaultBillCode>"
