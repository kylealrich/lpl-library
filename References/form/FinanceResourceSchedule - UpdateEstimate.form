UpdateEstimate is an ActionForm
    action is UpdateEstimate
    title is "UpdateEstimate"
    Layout
        visible when (TaskInProcess)
            header3 of "EnterYourPercentCompleteAndCommentsForTheTask"
            single column independent
                ParmPercentComplete
                    label is "PercentComplete"
                ParmComment
                    no label
                    use text area of 3 lines
            blank line
        visible when (TaskScheduled)
            header3 of "EnterYourExpectedTimeForBeginningTheTask"
            two column independent
                column1
                    NavigateToThis(ClosePeriodTask).ScheduleForTask.BeginDate
                        label is "ScheduledBeginDate"
                        display as text
                    visible when (TaskHasEstimate)
                        NavigateToThis(ClosePeriodTask).EstimateForTask.BeginDate
                            label is "EstimatedBeginDate"
                            display as text
                    ParmNewBeginDate
                        label is "UpdatedBeginDate"
                column2
                    NavigateToThis(ClosePeriodTask).ScheduleForTask.BeginTime
                        label is "Time"
                        display as text
                    visible when (TaskHasEstimate)
                        NavigateToThis(ClosePeriodTask).EstimateForTask.BeginTime
                            label is "Time"
                            display as text
                    ParmNewBeginTime
                        label is "Time"
            blank line
        header3 of "EnterYourExpectedTimeAndHoursForCompletingTheTask"
        four column independent
            column1
                NavigateToThis(ClosePeriodTask).ScheduleForTask.DueDate
                    label is "ScheduledDueDate"
                    display as text
                visible when (TaskHasEstimate)
                    NavigateToThis(ClosePeriodTask).EstimateForTask.DueDate
                        label is "EstimatedDueDate"
                        display as text
                ParmNewDueDate
                    label is "UpdatedDueDate"
            column2
                NavigateToThis(ClosePeriodTask).ScheduleForTask.DueTime
                    label is "Time"
                    display as text
                visible when (TaskHasEstimate)
                    NavigateToThis(ClosePeriodTask).EstimateForTask.DueTime
                        label is "Time"
                        display as text
                ParmNewDueTime
                    label is "Time"
            column3
                visible when (TaskIsTimeSensitive)
                    text of "<TimeSensitiveFormMessage>"
                        bold
                        color of red
            column4
                NavigateToThis(ClosePeriodTask).ScheduleForTask.LevelOfEffort
                    label is "LevelOfEffort"
                    display as text
                visible when (TaskHasEstimate)
                    NavigateToThis(ClosePeriodTask).EstimateForTask.LevelOfEffort
                        label is "LevelOfEffort"
                        display as text
                ParmNewLevelOfEffort
                    label is "LevelOfEffort"
        blank line
        header3 of "ReasonForUpdatingEstimate"
        visible when (EstimateReasonCodeRequired)
            single column independent
                paragraph
                    reason code
                    reason code.Description
                        no label
                        display as text
        single column
            ParmReason
                no label
                use text area of 5 lines
