PrintableTransactionDetailsForm is a SummaryForm
    title is "TransactionDetails"
    Layout
        paragraph
            StudentActivitySchool
                label is "School"
            StudentActivitySchool.SchoolName
                no label
        paragraph
            StudentActivityClosedPeriod
                label is "Period"
            SchoolActivityAccount
                label is "Activity"
                compact format
            SchoolActivityAccount.Description
                no label
        blank line
        visible when (HasReceiptDetails)
            list is StudentActivityReceiptDetailRel.ReceiptDetailList
        visible when (HasBankReceiptDetails)
            list is StudentActivityBankReceiptDetailRel.BankReceiptDetailList
            visible when (HasReceiptDetails)
                single column
                    PeriodReceipts
                        label is "TotalReceiptAmount"
        blank line
        visible when (HasDisbursementDetails)
            list is StudentActivityDisbursementDetailRel.DisbursementDetailList
        blank line
        visible when (HasTransferDetails)
            list is StudentActivityTransferDetailRel.TransferDetailBySchoolList
        visible when (HasBankTransferDetails)
            list is StudentActivityBankTransferDetailRel.BankTransferDetailList
