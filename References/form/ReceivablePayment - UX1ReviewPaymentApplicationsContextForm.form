UX1ReviewPaymentApplicationsContextForm is a Form
    title is "ReviewApplications"
    Layout
        four column distributed
            display as text
                column1
                    paragraph
                        Company.RepresentativeText
                        Company.Currency
                            label is "_"
                    Customer.RepresentativeText
                    visible when (DerivedMessage entered)
                        paragraph
                            text of "Note:"
                                header4
                                bold
                                color of red
                            DerivedMessage
                                label is "_"
                                header4
                                bold
                                color of red
                column2
                    paragraph
                        ReceivablePaymentHeader
                            label is "Batch"
                        TypeOfPayment
                            label is "Type"
                    paragraph
                        PaymentNumber
                        TransientDerivedStatus2
                            label is "Status"
                column3
                    paragraph
                        TransactionAmount
                            label is "TransactionAmount"
                        CreditAppliedAmount
                            label is "CreditApplied"
                    paragraph
                        AppliedAmount
                            label is "Applied"
                        AdjustAmountTransactionCurrency
                            label is "Adjusted"
                        visible when (TransientPaymentOpen entered)
                            TransientPaymentOpen
                                label is "Open"
                                    header4
                                    bold
                                    color of red
                                header4
                                color of red
                            OriginalCurrency
                                label is "_"
                                header4
                                color of red
                        visible when (TransientPaymentOpen not entered)
                            TransientPaymentOpen
                                label is "Open"
                                    header4
                                    bold
                                    color of green
                                header4
                                color of green
                            OriginalCurrency
                                label is "_"
                                header4
                                color of green
                column4
                    paragraph
                        ReceivableProcessLevel
                            label is "ProcessLevel"
                        ReceivablePaymentHeader.Status
                            no label
                            display as tag
                                color of gray when (ReceivablePaymentHeader.Status.OpenBatchUnreleased)
                                color of green when (not ReceivablePaymentHeader.Status.OpenBatchUnreleased)
                    paragraph
                        DepositDate
                        GeneralLedgerDate
                            label is "GlobalLedgerDate"
