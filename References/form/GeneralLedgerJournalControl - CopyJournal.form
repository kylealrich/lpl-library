CopyJournal is an ActionForm
    action is CopyJournal
    title is "CopyJournal"
    Layout
        single column
            visible when (not ValidForCopyOptionOtherThanNewJournal)
                CopyOption
            visible when (ValidForCopyOptionOtherThanNewJournal)
                CopyOption
                    display only
            NewPostDate
            NewTransactionDate
            visible when (CopyOption.CopyToNewJournal)
                NewUniqueJournalID
                AutoReverseOption
                ReverseAmounts
                RetainCurrencyAmounts
                NewReference
                NewDescription
                NewLedger
                CopyJournalComments
                    label is "CopyJournalComments"
                CopyTransactionComments
                AutoReverseTransactionsOnly
                CopyAttachments
            visible when (CopyOption.CopyDetailToTransactionInterface)
                AssignToRunGroup
                ReverseAmounts
                RetainCurrencyAmounts
