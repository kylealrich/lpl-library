MobileComponentForKitItemContext is a Form
    title is "KitComponent"
    Layout
        single column
            display as text
                KitItem.Item
                    label is "KitItem"
                KitItem.Item.Description
                paragraph
                    KitItem.MakeCode
                        label is "MakeCode"
                    KitItem.Active
                        display as text
                    visible when (KitItem.IsMakeToOrder)
                        KitItem.Item.StockUOM
                            label is "U\\O\\M"
