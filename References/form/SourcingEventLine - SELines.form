SELines is a Form
    title is "LineSummary"
    disable field options
    Layout
        display as text
            visible when (Status.Cancelled)
                single column
                    text of "**ThisLineHasBeenCancelled**"
                        header2
                        bold
                    blank line
            single column
                Name
                    no label
                    header2
                    color of blue
                visible when (Description entered)
                    Description
                        no label
                        use text area
                paragraph
                    ItemNumber
                        label is "Item"
                    visible when (ItemDescription entered)
                        ItemDescription
                            no label
                    visible when (ItemDescription2 entered)
                        ItemDescription2
                            no label
                visible when (ItemDescription3 entered)
                    ItemDescription3
                        label is "LongDescription"
            three column
                column1
                    paragraph
                        SourcingEvent.EventVersionString
                            label is "Event"
                        SourcingEvent.Name
                            label is "EventName"
                    OutputType
                    visible when (OutputType.PO)
                        RequestedDeliveryDate
                column2
                    SourcingEventLine
                        label is "Line"
                    paragraph
                        CommodityCode
                            label is "CommodityCode"
                            compact format
                        CommodityCode.Description
                            label is "CommodityDescription"
                    RequireResponse
                column3
                    paragraph
                        Quantity
                        UOM.UnitOfMeasure
                    paragraph
                        AllowAdvancedPricing
                            label is "AllowPriceBreaks"
                        AllowAddOnCharge
                    AllowAlternateResponses
            visible when (OutputType.PO)
                paragraph
                    ShipTo.PostalAddressForPurchaseOrder.Country
                        label is "ShipToAddress"
                    ShipTo.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine1
                        no label
                    ShipTo.PostalAddressForPurchaseOrder.Municipality
                        no label
                    ShipTo.PostalAddressForPurchaseOrder.StateProvince
                        no label
                    ShipTo.PostalAddressForPurchaseOrder.PostalCode
                        no label
            visible when (ManufacturerInformation entered)
                paragraph
                    ManufacturerInformation.Manufacturer.ManufacturerCode
                        label is "ManufacturerCode"
                    ManufacturerInformation.Manufacturer.ManufacturerDivision
                        label is "Division"
                    ManufacturerInformation.ManufacturerNumber
                        label is "ManufacturerNumber"
            visible when (UnspscCode entered)
                single column
                    UnspscCode
                        label is "UNSPSC"
                        compact format
            visible when (Company.SourcingGroup.SupplierGroupRel.DisplayGTINAndGLNInSupplierPortal)
                visible when (GlobalTradeItemNumber entered)
                    paragraph
                        GlobalTradeItemNumber
                            label is "GTIN"
                        GlobalTradeItemNumber.FullDescription
                            no label
