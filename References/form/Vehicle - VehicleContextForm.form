VehicleContextForm is a Form
    Layout
        paragraph
            visible when (RecordExists)
                display as text
                    Company.DerivedCompanyDisplay
                        label is "Company"
                    VehicleType.DerivedVehicleTypeDisplay
                        no label
            visible when (not RecordExists)
                Company
                Company.Name
                    no label
                    display as text
        paragraph
            visible when (not RecordExists)
                VehicleType
                VehicleType.Description
                    no label
                    display as text
        paragraph
            visible when (not RecordExists)
                Vehicle
            visible when (RecordExists)
                Vehicle
                    display as text
            Description
            Active
            Availability
                display as text
