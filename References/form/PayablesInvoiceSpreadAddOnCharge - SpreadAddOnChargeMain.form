SpreadAddOnChargeMain is a Form
    title is "InvoiceSpreadAddOnCharge"
    Layout
        header2 of "ChargeInformation"
        display as text
            paragraph
                PurchaseOrder
                PurchaseOrder.Vendor
                    label is "Vendor"
                PurchaseOrder.Vendor.VendorName
                    no label
        blank line
        paragraph
            AddOnCharge
                label is "AddOnCost"
                select is AddOnChargesWithSpreadList
            AddOnCharge.Description
                no label
                display as text
        single column
            SpreadMethod
            SpreadAmount
                label is "Amount"
            AddOnChargePercent
                label is "Rate"
            TaxCode
                label is "Add-OnCostTax"
            ProductTaxCategory
                label is "Add-OnCostProductTaxCategory"
            Accrual
                label is "AccrualFlag"
                display as text
            PurchaseFromLocation
