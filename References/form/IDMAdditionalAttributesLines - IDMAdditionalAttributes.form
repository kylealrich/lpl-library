IDMAdditionalAttributes is a Form
    is primary
    title is "IDMAdditionalAttributes_for_<IDMAdditionalAttributesHeader>"
    Layout
        visible when (not Status.Imported)
            single column
                paragraph
                    visible when (BusinessRelation not entered)
                        HeaderBusinessClass
                            label is "MainBusinessClass"
                            display as text
                            initial value is IDMAdditionalAttributesHeader.BusinessClass
                    visible when (BusinessRelation entered)
                        RelatedBusinessClass
                            label is "RelatedBusinessClass"
                            display as text
                            initial value is BusinessRelation.RelatedBusinessClass
                    visible when (IDMAdditionalAttributesLines entered)
                        DerivedStatus
                            label is "ImportStatus"
                            display as tag
                                color of gray
                paragraph
                    BusinessRelation
                        label is "Relation"
                        when value changed
                            IDMAttributeDescription =  blank
                            AttributeName =  blank
                paragraph
                    visible when (BusinessRelation entered)
                        RelatedBusinessField
                            label is "Field"
                            display as required when (BusinessRelation entered)
                            when value changed
                                IDMAttributeDescription =  RelatedBusinessField
                                AttributeName =  RelatedBusinessField
                    visible when (BusinessRelation not entered)
                        HeaderBusinessField
                            label is "Field"
                            display as required when (BusinessRelation not entered)
                            when value changed
                                IDMAttributeDescription =  HeaderBusinessField
                                AttributeName =  HeaderBusinessField
                    AttributeName
                        mouse over text is "Maximum_length_is_32_characters."
                        display as required
                paragraph
                    IDMAttributeDescription
                        raise red alert when (ActivateAdditionalAttributes.Inactive)
                            mouse over text is "Inactive"
                        raise green alert when (ActivateAdditionalAttributes.Active)
                            mouse over text is "Active"
                        display as required
        visible when (Status.Imported)
            single column
                paragraph
                    visible when (BusinessRelation not entered)
                        HeaderBusinessClass
                            label is "MainBusinessClass"
                            display as text
                    visible when (BusinessRelation entered)
                        RelatedBusinessClass
                            display as text
                    visible when (IDMAdditionalAttributesLines entered)
                        DerivedStatus
                            label is "ImportStatus"
                            display as tag
                                color of green
                paragraph
                    BusinessRelation
                        label is "Relation"
                        display as text
                paragraph
                    visible when (BusinessRelation entered)
                        RelatedBusinessField
                            label is "Field"
                            display as text
                    visible when (BusinessRelation not entered)
                        HeaderBusinessField
                            label is "Field"
                            display as text
                    AttributeName
                        display as text
                paragraph
                    IDMAttributeDescription
                        display as text
                        raise red alert when (ActivateAdditionalAttributes.Inactive)
                            mouse over text is "Inactive"
                        raise green alert when (ActivateAdditionalAttributes.Active)
                            mouse over text is "Active"
