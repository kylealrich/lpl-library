Sales is a Form
    Layout
        three column distributed
            column1
                visible when (Status.Unreleased)
                    paragraph
                        EnterChargeFlag
                            label is "AutoFillSubmitted"
                visible when (not Status.Unreleased)
                    paragraph
                        EnterChargeFlag
                            label is "AutoFillSubmitted"
                            display as text
            column2
                visible when (Status.Unreleased)
                    paragraph
                        ProcessLevel
                visible when (not Status.Unreleased)
                    ProcessLevel.BillingProcessLevelDescriptionID
                        label is "ProcessLevel"
                        display as text
            column3
                visible when (Status.Unreleased)
                    paragraph
                        PostDate
                visible when (not Status.Unreleased)
                    paragraph
                        PostDate
                            display as text
        header2 of "Amounts"
        visible when (IsAdjustment)
            two column table
                column headers
                    "Adjustment"
                    "Total"
                row headers
                    "ClosingSales"
                    "LessAdjustments"
                    "LessSalesTax"
                    "NetSales"
                column1
                    paragraph
                        visible when (Status.Unreleased)
                            ClosingSales
                                no label
                        visible when (not Status.Unreleased)
                            ClosingSales
                                no label
                                display as text
                    paragraph
                        visible when (Status.Unreleased)
                            Adjustments
                                no label
                        visible when (not Status.Unreleased)
                            Adjustments
                                no label
                                display as text
                    paragraph
                        visible when (Status.Unreleased)
                            SalesTax
                                no label
                        visible when (not Status.Unreleased)
                            SalesTax
                                no label
                                display as text
                    paragraph
                        NetSales
                            no label
                            display as text
                column2
                    paragraph
                        FranchiseSalesUpdateRel.TotalClosingSales
                            no label
                            display as text
                    paragraph
                        FranchiseSalesUpdateRel.TotalAdjustment
                            no label
                            display as text
                    paragraph
                        FranchiseSalesUpdateRel.TotalSalesTax
                            no label
                            display as text
                    paragraph
                        FranchiseSalesUpdateRel.TotalNetSales
                            no label
                            display as text
        visible when (not IsAdjustment)
            two column table
                column headers
                    "_"
                    "Total"
                row headers
                    "ClosingSales"
                    "LessAdjustments"
                    "LessSalesTax"
                    "CalculatedTax"
                    "NetSales"
                column1
                    paragraph
                        visible when (Status.Unreleased)
                            ClosingSales
                                no label
                        visible when (not Status.Unreleased)
                            ClosingSales
                                no label
                                display as text
                    paragraph
                        visible when (Status.Unreleased)
                            Adjustments
                                no label
                        visible when (not Status.Unreleased)
                            Adjustments
                                no label
                                display as text
                    paragraph
                        visible when (Status.Unreleased)
                            SalesTax
                                no label
                        visible when (not Status.Unreleased)
                            SalesTax
                                no label
                                display as text
                    paragraph
                        CalculatedTax
                            no label
                            display as text
                    paragraph
                        NetSales
                            no label
                            display as text
                column2
                    paragraph
                        TotalClosingSales
                            no label
                            display as text
                    paragraph
                        TotalAdjustment
                            no label
                            display as text
                    paragraph
                        TotalSalesTax
                            no label
                            display as text
                    paragraph
                        text of "_"
                    paragraph
                        TotalNetSales
                            no label
                            display as text
