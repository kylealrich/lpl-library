PCardCardholderContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not ProcurementGroupExists)
                        ProcurementGroup
                        ProcurementGroup.Description
                            no label
                            display as text
                    visible when (ProcurementGroupExists)
                        ProcurementGroup.DerivedProcurementGroupName
                            label is "ProcurementGroup"
                            display as text
                ProcurementCardRequest
                    label is "Request"
                    display as text
                visible when (not Status.New)
                    ProcurementCardRequestEffectiveDate
                        label is "EffectiveDate"
            column2
                paragraph
                    visible when (not ProcurementCardExists)
                        ProcurementCardProgram
                            label is "Program"
                        ProcurementCardProgram.Description
                            no label
                            display as text
                    visible when (ProcurementCardExists)
                        ProcurementCardProgram.DerivedCardProgramName
                            label is "Program"
                            display as text
                UserId
                    label is "RequestedBy"
                    display as text
                visible when (not Status.New)
                    ProcurementCardRequestExpirationDate
                        label is "ExpirationDate"
            column3
                Status
                    display as text
                visible when (not Status.New)
                    visible when (not ProcurementCardProgram.MaskProcurementCardNumberEntry)
                        ProcurementCardNumber
                            label is "CardNumber"
                    visible when (ProcurementCardProgram.MaskProcurementCardNumberEntry)
                        ProcurementCardNumber
                            label is "CardNumber"
                            hidden entry
