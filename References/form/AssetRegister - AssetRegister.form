AssetRegister is an ActionForm
    action is AssetRegister
    Layout
        header2 of "SelectionOptions"
        paragraph
            Book
                label is "Book"
            Book.Description
                no label
                display as text
            PrelimClose
                label is "PreliminaryClose"
        paragraph
            FromDate
                label is "FromInServiceDate"
            ToDate
                label is "ToInServiceDate"
        paragraph
            Company
                label is "Company"
                select is Companies
            Company.CompanyName
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            Classification
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division.Description
                no label
                display as text
        paragraph
            AssetType
                label is "Type"
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        paragraph
            Property
            Category
        single column
            Disposals
        header2 of "AdditionalOptions"
        paragraph
            FullyDepr
                label is "FullyDepreciated"
            TaxExempt
        paragraph
            Simulated
            Used
        paragraph
            Asset
                select is AllAssets
            Asset.Description
                no label
                display as text
        paragraph
            AssetLease.LeaseCompany
                label is "LeaseCompany"
            AssetLease.LeaseCompany.Name
                no label
                display as text
            AssetLease.Lease
                label is "Lease"
        single column
            TagNumber
                label is "Tag"
        paragraph
            AssetGroup
                select is AssetGroups
            AssetGroup.Description
                no label
                display as text
        paragraph
            TransactionDimension
                label is "TransactionDimensions_or_AssetDimensionGroup"
                compact format
            AstAuGroup
                no label
            AstAuGroup.Description
                no label
                display as text
        header2 of "OutputOptions"
        single column
            PageBreak
        single column
            header3 of "PrintTotals"
        single column
            header4 of "Sequence"
            three column
                LeaseOption
                    label is "Lease"
                LocOption
                    label is "Location"
                DivOption
                    label is "Division"
                TypeOption
                    label is "Type\\,Sub"
                AstgrpOption
                    label is "AssetGroup"
                AssetOption
                    label is "Asset"
            header4 of "Miscellaneous"
            blank line
            InservOption
                label is "In\\-\\Service"
            PrintDetailReport
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AssetRegisterReport_RDG
                AssetRegisterDetailReport_RDG
            column2 of 25%
                AssetRegisterReport_XPT
                AssetRegisterDetailReport_XPT
