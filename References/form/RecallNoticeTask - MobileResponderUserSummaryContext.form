MobileResponderUserSummaryContext is a Form
    title is "TaskSummary"
    restrict action MobileAskAQuestion
    Layout
        single column
            RecallNotice.MobileNoticeAndNameLabel
                no label
                display as text
        two column distributed
            column1
                FormattedDueDate
                    label is "DueDates"
                    display as text
                Priority
                    display as text
            column2
                Status
                    display as text
                RecallNotice.RecallCoordinator.Employee.FirstLastName
                    label is "Coordinator"
                    display as text
        single column
            visible when (UnacceptedNonManualTaskWithQuestions)
                text of "*TaskMustBeAcceptedBeforeQuestionsCanBeAnsweredOrQuantitiesEntered"
                    italics
            visible when (Status.Completed)
                text of "TaskHasBeenCompleted"
                    italics
            visible when (TaskCanBeAccepted)
                text of "MustAcceptTaskBeforeResponsesCanBeEntered"
                    bold
            visible when (RecallNotice.RecallTaskInstruction entered)
                RecallNotice.RecallTaskInstruction.Description
                    label is "TaskInstructions"
                    display as text
        paragraph
            visible when (TaskCanBeAccepted)
                button of "AcceptTask"
                    action is New.AcceptTask
            visible when (TaskCanBeCompleted)
                button of "CompleteTask"
                    action is Accepted.CompleteTask
                    is primary
            visible when (TaskCanBeReopened)
                button of "ReopenTask"
                    action is Completed.ReopenTask
        single column
            visible when (HasLinkToDisplay)
                button of "<first DisplayLinkOnTaskRel.Link>"
                    link is external "<first DisplayLinkOnTaskRel.Link>"
                    display as link
            visible when (HasAttachmentToDisplay)
                visible when (false)
                    first DisplayAttachmentOnTaskRel.Attachment.MimeType
                button of "<first DisplayAttachmentOnTaskRel.Attachment.Title>"
                    view first DisplayAttachmentOnTaskRel.Attachment.File
                    display as link
