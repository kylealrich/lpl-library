MobileContractLineDistribution is a Form
    title is "Line<ContractLine>Distribution"
    Actions
        action is save and close
            action icon is save
            label is "_"
    Layout
        display as text
            two column distributed
                column1
                    ContractLine.ContractLineItemRepresentativeText
                        label is "Item"
                    visible when (ContractLine.VendorItem entered)
                        ContractLine.VendorItem
                        Contract.Status
                            label is "ContractStatus"
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                    visible when (ContractLine.HoldOnSomething)
                        ContractLine.OnHoldMessage
                            no label
                            display as tag
                                color of red
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                    Contract.WorkingContractID
                    ContractLine.ContractLineState
                        label is "LineStatus"
                        display as tag
                            color of brown when (ContractLine.ContractLineState.Draft)
                            color of green when (ContractLine.ContractLineState.Active)
                            color of purple when (ContractLine.ContractLineState.Amendment)
                            color of gray when (ContractLine.ContractLineState.Inactive)
                            color of black when (ContractLine.ContractLineState.Closed)
        header2 of "_"
            visible when (DistributionCreated)
                single column
                    ContractLineDistribution
            visible when (DistributionCodeExists)
                paragraph
                    ContractLine.PayablesDistributionCode
                        display as text
        visible when (not HeaderCommitments)
            paragraph
                DistributionAccount
                    compact format
        visible when (HeaderCommitments)
            paragraph
                DistributionAccount
                    display as text
                    compact format
        paragraph
            Percent
            visible when (DistAmountEntered)
                DistributionAmount
                    display as text
        visible when (ContractLineHasErrors)
            visible when (LineSpreadCommitments)
                single column
                    text of "CannotCreateSpreadUntilContractLineErrorsAreFixed"
                        italics
        visible when (AvailableToSpread)
            two column
                visible when (AvailableToCreateSpread)
                    button of "CreateCommitmentSpreads"
                        link is ContractLineDistributionSpreadsLink
                        center
                visible when (AvailableToUpdateSpread)
                    button of "UpdateCommitmentSpreads"
                        link is ContractLineDistributionSpreadsLink
                        center
