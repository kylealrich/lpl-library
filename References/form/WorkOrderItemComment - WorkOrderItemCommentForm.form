WorkOrderItemCommentForm is a Form
    is primary
    propagate as a drill
    title is "WorkOrder_<WorkOrder>_Item_<WorkOrderItem>_Comment_<WorkOrderItemComment>"
    Layout
        display as text
            three column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                    InventoryLocation.RepresentativeText
                        label is "WorkOrderLocation"
                column2
                    paragraph
                        WorkOrder
                        WorkOrderItem
                            label is "Item"
                    WorkOrderItem.Item.RepresentativeText
                column3
                    WorkOrder.Status
                    paragraph
                        WorkOrder.PickingFeedbackStatus
                        WorkOrder.ProductionFeedbackStatus
        header2 of "_"
        single column
            WorkOrderItemComment
                display as text
            Name
                label is "Title"
            Type
            Comment
