CustomerReceiptForm is a Form
    use for action CreateCustomerReceipt
    title is "CustomerReceipt"
    Layout
        paragraph
            CashCode
                display as text
            CashCode.Currency
                no label
                display as text
            CashLedgerStatement
                label is "StatementNumber"
                display as text
        single column
            CashLedgerStatementDetail
                label is "LineNumber"
        blank line
        single column
            TransactionDate
        two column
            CashLedgerStatement.CustomerBankTransactionCode
                label is "PayCode"
                display as text
            CashLedgerStatement.CustomerBankTransactionCode.Description
                no label
                display as text
        visible when (ReceivableProcessLevelEditable)
            paragraph
                ReceivableProcessLevel
        two column
            Customer
            Customer.Name
                no label
                display as text
        single column
            AmountTransactionCurrency
                label is "Amount"
        blank line
        visible when (CashLedgerStatementDetailExist)
            paragraph
                button of "CashReceipt"
                    form invoke is ReceivablePaymentDetail
