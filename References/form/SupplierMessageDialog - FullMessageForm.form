FullMessageForm is a Form
    title is "MessageDialog"
    Layout
        display as text
            visible when (SupplierContactMessage.POOrInvoiceOrEventEntered)
                paragraph
                    SupplierContactMessage.OriginatingCompany
                    visible when (PurchaseOrderEntered)
                        SupplierContactMessage.OriginatingPO
                    visible when (InvoiceEntered)
                        SupplierContactMessage.InvoiceRel.Invoice
                    visible when (EventEntered)
                        SupplierContactMessage.OriginatingEvent
                    visible when (ReceiptEntered)
                        SupplierContactMessage.OriginatingReceipt
                    visible when (ReturnEntered)
                        SupplierContactMessage.OriginatingReturn
            visible when (ContractEntered)
                single column
                    SupplierContactMessage.OriginatingContract
        visible when (not HasResponse)
            visible when (OtherOrigin)
                two column
                    Message
                    ResponseAttachment.File
                        label is "ResponseAttachment"
            visible when (SupplierOrigin)
                two column
                    Message
                        display as text
                        use text area of 5 lines
                    visible when (HasMessageAttachment)
                        button of "ViewMessageAttachment"
                            view MessageAttachment.File
                            display as link
        visible when (HasResponse)
            two column
                Message
                    display as text
                    use text area of 5 lines
                visible when (HasMessageAttachment)
                    button of "ViewMessageAttachment"
                        view MessageAttachment.File
                        display as link
        display as text
            two column
                visible when (HasResponse)
                    Response
                        color of green
                        use text area of 5 lines
                visible when (HasResponseAttachment)
                    button of "ViewResponseAttachment"
                        view ResponseAttachment.File
                        display as link
            three column
                DerivedOrigin
                Supplier.RepresentativeText
                SupplierSourceId.RepresentativeText
            three column
                SupplierContactMessage.MessageTitle
                    label is "OriginalMessageTitle"
                SupplierContactMessage.MessageText
                    label is "OriginalMessageText"
                    use text area of 5 lines
        visible when (not HasResponse)
            visible when (OtherOrigin)
                single column
                    ResponseRequested
            visible when (SupplierOrigin)
                single column
                    ResponseRequested
                        display as text
        visible when (HasResponse)
            single column
                ResponseRequested
                    display as text
        single column
            SupplierContactMessage.Priority
                display as text
