InvoiceDetailDrillForm is a Form
    title is "InvoiceDetail"
    Layout
        display as text
            three column distributed
                column1
                    DerivedCompanyNameID
                        label is "Company"
                    DerivedVendorNameID
                    paragraph
                        Invoice
                        Suffix
                column2
                    Status
                    InvoiceDate
                    VoucherNumberDisplay
                column3
                    paragraph
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                        InvoiceCurrency
                    DueDate
                    visible when (ProcessingTeamEntered)
                        ProcessingTeam
                    visible when (not ProcessingTeamEntered)
                        APClerk.PreferredSimplePresentationName
                            label is "Processor"
            three column distributed
                column1
                    NetPayableAmount
                    TransientPaymentDate
                        label is "PaymentDate"
                    InvoiceType
                column2
                    AmountPaid
                    TransientPaymentNumber
                        label is "PaymentNumber"
                    FirstPurchaseOrder
                column3
                    Description
                    DerivedRemitToNameID
                    visible when (FromVendorReturn)
                        VendorReturn.ReferenceNumber
                            label is "VendorReturnReference"
            visible when (TaxInformationEntered)
                three column distributed
                    TaxAdjustment
                    TaxableAmount
                    TaxAmount
                    TaxCode
                    TransientTaxPointDate
            header2 of "_"
            three column distributed
                column1
                    paragraph
                        ProcessLevel
                        ProcessLevel.Name
                            no label
                    paragraph
                        CashCode
                        CashCode.Description
                            no label
                    paragraph
                        IncomeCode
                        IncomeCode.Description
                            no label
                    paragraph
                        AccrualCode
                        AccrualCode.Description
                            no label
                column2
                    paragraph
                        RuleGroup
                        RuleGroup.Description
                            no label
                    paragraph
                        ReasonCode
                        ReasonCode.Description
                            no label
                    paragraph
                        DiversityCode
                        DiversityCode.Description
                            no label
                    SecondaryWithholding
                        display as text
                column3
                    ForeignEconomicRegulatoryCode
                    PurchaseFromLocation
                    IncomeWithholdingCode
                        label is "VendorWithholdingCode"
                    visible when (IsRecurringInvoice)
                        NumberOfRecurringInvoices
                    visible when (IsRecurringInvoice)
                        RecurringFrequency
            header2 of "Discount"
            three column distributed
                column1
                    DiscountAmount.CurrencyAmount
                        label is "DiscountAmount"
                    ReceiptOfInvoiceDate
                    Anticipation
                column2
                    paragraph
                        DiscountCode
                        DiscountCode.Description
                            no label
                    TermsCode
                    FlexTerms
                column3
                    AllowableAmountForDiscount
                    TermsCode.Desc1
                        no label
            three column distributed
                column1
                    DiscountDate
                    visible when (DiscountDate2 entered)
                        DiscountDate2
                    visible when (DiscountDate3 entered)
                        DiscountDate3
                column2
                    DiscountPercent
                    visible when (DiscountPercent2 entered)
                        DiscountPercent2
                    visible when (DiscountPercent3 entered)
                        DiscountPercent3
                column3
                    DiscountAmount.CurrencyAmount
                        label is "DiscountAmount"
                    visible when (DiscountAmount2 entered)
                        DiscountAmount2
                    visible when (DiscountAmount3 entered)
                        DiscountAmount3
            header2 of "Origin"
            three column distributed
                AuthorityCode
                Operator
                CreateDate
                VoucherNumberDisplay
                InvoiceSource
