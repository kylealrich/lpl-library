ColumnarQueryForm is a Form
    title is "ColumnarQuery"
    Layout
        two column
            ColumnarQueryGroup
            ColumnarQuery
        single column
            PrimaryBusinessClass
                select is ColumnarBusinessClasses.BusinessClassSelectList
                when value changed
                    PrimaryRepSet =  DefaultPrimaryRepSet
                    PrimaryWhere =  blank
                    JoinToOTMRelatedLink =  blank
        two column
            valid when (PrimaryBusinessClass entered)
                PrimaryRepSet
                    select is ColumnarReplicationSets.ColumnarQuerySelectList
                    when value changed
                        PrimaryRepSetBC =  DefaultPrimaryRepSetBC
                paragraph
                    PrimaryRepSetBC
                        select is ColumnarActiveRepSetBcs.ColumnarQuerySelectList
                    visible when (PrimaryRepSetBC.BusinessClass entered)
                        PrimaryRepSetBC.DataToExtract
                            label is "ExtractTpe"
        two column
            visible when (false)
                PrimaryColumnarList
                    select is ColumnarViewLists.BusinessListRelList
                    when value changed
                        refresh PrimaryAggregationTableExists
                        AddAggTableFields =  PrimaryAggregationTableExists
                paragraph
                    PrimaryAggregationTable
                        select is AggTableCharts.BusinessChartSelectList
                        when value changed
                            refresh PrimaryAggregationTableExists
                            AddAggTableFields =  PrimaryAggregationTableExists
                    valid when (PrimaryAggregationTableExists)
                        AddAggTableFields
        single column
            PrimaryWhere
            JoinToOTMRelatedLink
        single column
            visible when (false)
                PrimaryAggregationTableExists
