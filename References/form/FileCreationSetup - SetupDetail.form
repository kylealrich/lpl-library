SetupDetail is a Form
    title is "Details"
    Layout
        single column
            valid when (MappingsExist)
                single column
                    Active
                        display as switch
            Description
        paragraph
            ExportFile
                when value changed
                    refresh PayablesInvoiceType
                    refresh GeneralLedgerTransactionType
                    refresh PurchaseOrderLineType
                    refresh InventoryLocationType
                    refresh InventoryTransactionLineType
                    refresh GeneralLedgerTotalType
                    refresh GLTransactionDetailType
                    refresh VendorType
                    refresh AssetType
                    refresh ScenarioType
                    refresh GeneralLedgerChartAccountType
                    refresh BinGroupType
                    refresh ContractType
                    refresh ItemType
                    refresh RequesterRequestingLocationType
                    refresh PurchaseOrderType
                    refresh BillingInvoiceType
                    refresh CustomerOrderType
                    refresh GeneralLedgerJournalControlType
                    refresh IntercompanyBillingSettlementHeaderType
                    refresh IntercompanyBillingInvoiceType
                    refresh IntercompanyBillingDocumentHeaderType
                    refresh AccountingEntityType
                    refresh CashLedgerTransactionType
                    refresh AssetTransactionSummaryType
                    refresh AssetBookHistoryType
                    refresh AssetBookPeriodHistoryType
                    refresh ReceivablePaymentType
                    refresh ReceivableInvoiceType
                    refresh ReceivableGLDistributionType
                    refresh CompanyCustomerType
                    refresh ReceivableApplicationType
                    refresh NationalAccountBalanceType
                    refresh ElectronicFundsTransferTransactionType
                    refresh ApplicationBusinessClass
            SelectSourceFileByCategory
                label is "ShowSourceFileByCategory"
                display as switch
        visible when (false)
            single column
                PayablesInvoiceType
                GeneralLedgerTransactionType
                PurchaseOrderLineType
                InventoryLocationType
                InventoryTransactionLineType
                GeneralLedgerTotalType
                GLTransactionDetailType
                VendorType
                AssetType
                ScenarioType
                GeneralLedgerChartAccountType
                BinGroupType
                ContractType
                ItemType
                RequesterRequestingLocationType
                PurchaseOrderType
                BillingInvoiceType
                CustomerOrderType
                GeneralLedgerJournalControlType
                IntercompanyBillingSettlementHeaderType
                IntercompanyBillingInvoiceType
                IntercompanyBillingDocumentHeaderType
                AccountingEntityType
                CashLedgerTransactionType
                AssetTransactionSummaryType
                AssetBookHistoryType
                AssetBookPeriodHistoryType
                ReceivablePaymentType
                ReceivableInvoiceType
                ReceivableGLDistributionType
                CompanyCustomerType
                ReceivableApplicationType
                NationalAccountBalanceType
                ElectronicFundsTransferTransactionType
                ApplicationBusinessClass
        visible when (SelectSourceFileByCategory)
            single column
                CoreFiles
                    when value changed
                        ExportFile =  CalculateExportFileValue
        single column
            TurnOffRecordAuditing
                label is "DisableRecordAuditing"
                display as switch
        header3 of "FileName"
        paragraph
            FileName
            AppendTimestampToFileName
                display as switch
        paragraph
            FileNameTimeStampFormat
            BuildTimeStampFormat
                display as switch
        visible when (BuildTimeStampFormat)
            two column table
                column headers
                    "Date"
                    "Time"
                column1
                    DateFormat
                        when value changed
                            FileNameTimeStampFormat =  CalculateTimeStampFormat
                    IncludeCentury
                        when value changed
                            FileNameTimeStampFormat =  CalculateTimeStampFormat
                column2
                    IncludeHours
                        when value changed
                            FileNameTimeStampFormat =  CalculateTimeStampFormat
                    IncludeMinutes
                        when value changed
                            FileNameTimeStampFormat =  CalculateTimeStampFormat
                    IncludeSeconds
                        when value changed
                            FileNameTimeStampFormat =  CalculateTimeStampFormat
                    IncludeMilliseconds
                        when value changed
                            FileNameTimeStampFormat =  CalculateTimeStampFormat
        header3 of "FileHeaderText"
        single column
            FileHeaderText
                no label
