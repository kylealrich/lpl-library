VendorCertificationForm is a Form
    is primary
    title is "VendorCertification"
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        VendorGroup
                    visible when (RecordExists)
                        VendorGroup
                            display as text
                    VendorGroup.Description
                        no label
                        display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        Vendor
                    visible when (RecordExists)
                        Vendor
                            display as text
                    Vendor.VendorName
                        no label
                        display as text
            column3
                paragraph
                    VendorLocation
                        label is "Location"
                        display as text
                    VendorLocation.VendorName
                        no label
                        display as text
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        PayablesCertificationCode
                            label is "CertificationCode"
                    visible when (RecordExists)
                        PayablesCertificationCode
                            label is "CertificationCode"
                            display as text
                    PayablesCertificationCode.Description
                        no label
                        display as text
            column2
                CertificationEffectiveDate
                    label is "EffectiveDate"
            column3
                paragraph
                    CertificationExpirationDate
                        label is "ExpirationDate"
                    DaysUntilExpiration
                        label is "DaysUntilExpiration"
                        display as text
        three column distributed
            column1
                MaximumSpendAmount
                    display as required when (Vendor.ValidateCertificationAmount)
                    when value changed
                        refresh Vendor.ValidateCertificationAmount
            column2
                ValidCertificationDays
            column3
                MaximumSpendHoldCode
                    display as required when (Vendor.ValidateCertificationAmount)
                    when value changed
                        refresh Vendor.ValidateCertificationAmount
        single column
            Validated
            CommentText
                label is "Comment"
                use text area of 12 lines
