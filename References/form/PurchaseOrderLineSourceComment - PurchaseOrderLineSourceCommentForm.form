PurchaseOrderLineSourceCommentForm is a Form
    is primary
    title is "Comment"
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            PurchaseOrder
                label is "PurchaseOrderNumber"
                display as text
            PurchaseOrder.PurchaseOrderRevision
                label is "Revision"
                display as text
        paragraph
            PurchaseOrderLine
                label is "LineNumber"
                display as text
        paragraph
            PurchaseOrderLineSource
                label is "PurchaseOrderLineSource"
        blank line
        single column
            CommentType
            CommentTitle
                label is "Title"
            CommentText
                label is "Text"
                use text area of 12 lines
        paragraph
            Attachment.File
            Attachment.Title
            visible when (false)
                Attachment.MimeType
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
