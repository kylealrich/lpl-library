LineApprovalMainForm is a Form
    title is "Requisition<Requisition.Requisition>Line<RequisitionLine>"
    Layout
        display as text
            paragraph
                Item
                    header4
                Description
                    header4
                Item.Description2
                    no label
                    header4
                visible when (Item.HasDesc3)
                    Item.Description3
                        no label
                        header4
            four column distributed
                paragraph
                    Quantity
                        header4
                    EnteredUOM
                        label is "U\\O\\M"
                        header4
                TransactionUnitCost
                    label is "UnitCost"
                    header4
                paragraph
                    ApprovalValue
                        label is "Amount"
                        header4
                    TransactionCurrencyCode
                        no label
                        header4
                RequestedDeliveryDate
                    header4
            header2 of "_"
            four column distributed
                Manufacturer.DerivedCodeDivisionDescription
                    label is "Manufacturer"
                    header4
                Vendor
                paragraph
                    VendorItem
                    VendorItem.VendorItemDescription
                        no label
                ItemType
            four column distributed
                CreatePurchaseOrder
                ServiceCode
                CostOption
                OverrideCost
            four column distributed
                paragraph
                    LateDeliveryDate
                AllocationPriority
                    label is "Priority"
