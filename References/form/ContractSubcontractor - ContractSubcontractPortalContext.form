ContractSubcontractPortalContext is a Form
    title is "ContractSubcontractor"
    Layout
        paragraph
            Contract.RepresentativeText
                display as text
        paragraph
            Subcontractor.SubcontractorName
                label is "Subcontractor"
                display as text
        two column
            Contract.ProposedTotalContractAmount
                label is "ProposedTotalContractAmount"
                display as text
        paragraph
            SubcontractorCommodityCode
                label is "CommodityCode"
                compact format
            SubcontractorCommodityCode.CommodityCode.Description
                no label
                display as text
        paragraph
            LienReleaseRequired
            LienReleaseCompleted
        visible when (ProposedTotalContractAmountEntered)
            paragraph
                CommittedAmount
                    label is "EnterCommittedAmount"
                PaymentPercentage
                    label is "-Or-CommittedPercent"
        visible when (not ProposedTotalContractAmountEntered)
            paragraph
                CommittedAmount
                    label is "EnterCommittedAmount"
                    display only
                PaymentPercentage
                    label is "-Or-CommittedPercent"
                    display only
                text of "_PleaseAskContractAdministratorToEnterProposedTotalContractAmountToEnableEntryOfTheseFields"
                    bold
        four column
            DisplayCommittedAmount
                label is "CommittedAmount"
                display as text
                display zero
            DisplayCommittedPercent
                label is "CommittedPercent"
                display as text
                display zero
            paragraph
                DerivedTotalAmountPaid
                    label is "TotalPaid"
                    display as text
                    display zero
                DerivedTotalPercentComplete
                    no label
                    display as text
                    display zero
            paragraph
                DerivedRemainingAmount
                    label is "Remaining"
                    display as text
                    display zero
                DerivedRemainingPercent
                    no label
                    display as text
                    display zero
        visible when (ContractAndSubcontractorDiversity)
            display as text
                paragraph
                    Contract.DerivedDiversityAmtFromPct
                        label is "ContractTotalDiversity:_"
                    DerivedIsText
                        no label
                    Contract.DiversityPctOfProposedTotal
                        no label
                    DerivedOfText
                        no label
                    Contract.ProposedTotalContractAmount
                        no label
                visible when (SubcontractorHasCommittedAmount)
                    paragraph
                        DisplayCommittedAmount
                            label is "Subcontractor'sPortion:_"
                        DerivedIsText
                            no label
                        DerivedDiversityPctOfContract
                            no label
                        DerivedOfText
                            no label
                        Contract.DerivedDiversityAmtFromPct
                            no label
