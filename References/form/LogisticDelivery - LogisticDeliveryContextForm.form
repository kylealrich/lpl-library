LogisticDeliveryContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    paragraph
                        Company
                column2
                    paragraph
                        InventoryLocation
                column3
                    paragraph
                        VehicleTrip
                column4
                    paragraph
                        VehicleTripLine.ShipmentLoadConsolidation
            four column distributed
                column1
                    paragraph
                        VehicleTrip.Vehicle
                column2
                    paragraph
                        VehicleTrip.Vehicle.VehicleIdentifier
                column3
                    paragraph
                        VehicleTrip.VehicleOperator
                column4
                    paragraph
                        DeliveryStatus
                            display as tag
                                color of blue when (NotYetDelivered)
                                color of yellow when (DeliveryInProgress)
                                color of yellow when (PartiallyDelivered)
                                color of green when (DeliveryCompleted)
            four column distributed
                column1
                    paragraph
                        VehicleTripLine.ShipTo
                            label is "ShipToLocation"
                column2
                    paragraph
                        VehicleTripLine.PickShipRoute
                column3
                    visible when (DeliveryCompleted)
                        paragraph
                            LogisticDelivery
                                display as text
                    visible when (not DeliveryCompleted)
                        paragraph
                            LogisticDelivery
