ContractProposalTemplate is a Form
    title is "ContractProposalTemplate"
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        three column distributed
            visible when (ContractExists)
                Name
            visible when (PrimaryContactExists)
                PrimaryContact
                    label is "PrimaryInternalContact"
                    display as text
            visible when (not PrimaryContactExists)
                PurchasingContact
                    label is "PrimaryInternalContact"
        single column
            Description
                use text area
        two column distributed
            column1
                ContractType
                    select is BuyerContractTypesSelect
                ContractSubtype
                    select is BuyerContractSubtypeSelect
            column2
                ContractClassification
                    select is BuyerContractClassificationSelect
                ContractSubclassification
                    select is BuyerContractSubclassificationSelect
        two column distributed
            paragraph
                ContractDocumentTemplate
                ContractDocumentTemplate.ContractDocumentTemplateGroup.Title
                    no label
                    display as text
            paragraph
                DefaultAccount
                    label is "Account"
                    compact format
        visible when (HasAPurchaseType)
            two column distributed
                column1
                    paragraph
                        Vendor.RepresentativeText
                            display as text
                    visible when (VendorEntered)
                        paragraph
                            ViewVendorOrPurchaseFromLocation
                                label is "Vendor_orPurchaseFromLocation"
                                display as horizontal radio buttons
                            visible when (ViewVendorOrPurchaseFromLocation.PurchaseFrom)
                                ApPoPurchaseFrom.PurchaseFromLocation
                                    select is ActivePurchaseFromLocations
                                visible when (HasPoPurchFrom)
                                    ApPoPurchFromName
                                        no label
                                        display as text
                            visible when (ViewVendorOrPurchaseFromLocation.Vendor)
                                ApPoPurchaseFrom.VendorLocation
                                    select is ActivePurchaseFromLocations
                                visible when (HasApPurchFrom)
                                    ApPoPurchFromName
                                        no label
                                        display as text
