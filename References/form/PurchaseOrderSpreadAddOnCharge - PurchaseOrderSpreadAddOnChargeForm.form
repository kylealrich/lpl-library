PurchaseOrderSpreadAddOnChargeForm is a Form
    is primary
    propagate as a drill
    title is "PurchaseOrderSpreadAddOnCharge"
    Layout
        header2 of "PurchaseOrderInformation"
        display as text
            three column distributed
                column1
                    Company.DerivedCompanyNameID
                        label is "Company"
                    paragraph
                        PurchaseOrder
                        PurchaseOrder.PurchaseOrderRevision
                            label is "Revision"
                    paragraph
                        PurchaseOrder.PurchaseFromLocation.DerivedPurchasedFromLocation
                            label is "PurchaseFrom"
                    PurchaseOrder.Reference1
                column2
                    PurchaseOrder.Buyer.DisplayBuyerName
                        label is "Buyer"
                    PurchaseOrder.Vendor.DerivedVendorNameID
                    PurchaseOrder.ShipToLocation.DisplayLocation
                        label is "ShipTo"
                    PurchaseOrder.Reference2
                column3
                    PurchaseOrder.PurchaseOrderDate
                    paragraph
                        PurchaseOrder.DefaultDeliveryDate
                            label is "DeliveryDate"
                    PurchaseOrder.TotalWithCurrencyDisplay
                        label is "PurchaseOrderTotal"
                    paragraph
                        PurchaseOrder.DerivedPurchaseOrderStatus
                            label is "POStatus"
                        visible when (PurchaseOrder.MiscellaneousAddOnChargeExists)
                            PurchaseOrder.HasMiscellaneousAddOnCostLabel
                                no label
        header2 of "AddOnChargeInformation"
        three column distributed
            paragraph
                AddOnCharge
                    label is "AddOnCost"
                    select is AddOnChargesWithSpreadList
                AddOnCharge.Description
                    no label
                    display as text
            SpreadMethod
            TransientZeroCost
                label is "ZeroCost"
        paragraph
            visible when (SpreadMethod.Rate)
                AddOnChargePercent
                    label is "Rate"
            visible when (not SpreadMethod.Rate)
                EnteredAddOnChargeAmount
                    label is "Amount"
            CalculatedSpreadAmount
                label is "SpreadAmount"
                display as text
        header2 of "ProcessFlags"
        three column distributed
            Taxable
            paragraph
                TaxCode
                    label is "TaxCode"
                TaxCode.Description
                    no label
                    display as text
            ProductTaxCategory
        three column distributed
            Summarize
                label is "Summary"
            AddOnCharge.LandedAddOnCharge
                label is "LandedFlag"
            PrintOnPO
                label is "PrintOnPurchaseOrder"
        Accrual
            label is "AccrualFlag"
            display as text
        header2 of "VendorInformation"
        two column distributed
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            PurchaseFromLocation
        paragraph
            TransientCurrency
                label is "Currency"
            TransientEnteredCurrencyConversionRate
                label is "ExchangeRate"
