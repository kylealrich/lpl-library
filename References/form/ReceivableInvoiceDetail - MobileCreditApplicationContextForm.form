MobileCreditApplicationContextForm is a Form
    title is "CreditApplication"
    Layout
        visible when (false)
            TransientIsolatedReceivableCompany
        display as text
            paragraph
                Company
            paragraph
                Customer
                Customer.Name
                    label is "CustomerName"
            paragraph
                ReceivableProcessLevel.RepresentativeText
            two column distributed
                GeneralLedgerDate
                ReceivableInvoiceDetail.Invoice
                    label is "CreditMemo"
            two column distributed
                Description
                    label is "Description"
                DerivedOpenAmount
                    label is "OpenAmount"
            paragraph
                TransactionDate
                DueDate
            paragraph
                DerivedTransactionAmount
                    label is "TransactionAmount"
                OriginalCurrency
                    label is "Currency"
            paragraph
                visible when (IsAppliedOrAdjusted)
                    DerivedAppliedAmount
                        label is "AppliedAmount"
                    DerivedAdjustAmount
                        label is "AdjustedAmount"
            single column
                visible when (CreditMemoHasApplications)
                    button of "Applications"
                        link is CreditApplicationNav
