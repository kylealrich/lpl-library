TransferPricingRechargeWizardForm is a Form
    Layout
        three column distributed
            column1
                visible when (not TransferPricingExists)
                    TransferPricing
                        label is "RechargeName"
                visible when (TransferPricingExists)
                    TransferPricing
                        label is "RechargeName"
                        display as text
                Description
                TransferPricingType
                paragraph
                    visible when (not CompanyExists)
                        Company
                            label is "ReceivablesCompany"
                            select is ReceivableCompanySelectForIntercompanyBilling
                    visible when (CompanyExists)
                        ReceivablesCompanyDescription
                            label is "ReceivablesCompany"
                            display as text
                        Company.Currency
                            no label
                            display as text
                Company.GeneralLedgerCompany.AccountingEntity
                    label is "BillFromEntity"
                    display as text
                AllEntities
            column2
                Ledger
                    label is "Ledger"
                Calendar
                    label is "Calendar"
                paragraph
                    PeriodType
                        label is "PeriodType"
                    YearToDate
                Currency
                CurrencyTable
            column3
                StartDate
                EndDate
                AllocateAmountType
                Status
