PaymentApplicationForm is a Form
    title is "ReceivableApplication"
    Actions
        action is AvailableForPosting.Update
        action is UnreleasedCashApplication.Remove
            action icon is delete
            hide when invalid
        action is RequiresAuditListing.Remove
            action icon is delete
            hide when invalid
        action is AvailableForPosting.Remove
            action icon is delete
            hide when invalid
        action is save
    Layout
        four column distributed
            visible when (not Status.ApplicationPosted)
                column1
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                column2
                    paragraph
                        visible when (not IsOverApplied)
                            CreditTransaction.CreditApplicationAmount.CurrencyAmount
                        visible when (IsOverApplied)
                            CreditTransaction.CreditApplicationAmount.CurrencyAmount
                                display as text
                        DerivedCreditCurrency
                            no label
                            display as text
        blank line
        display as text
            header2 of "Debit"
            four column distributed
                column1
                    Company.RepresentativeText
                    paragraph
                        ReceivableApplication.BatchNumber
                            label is "Batch"
                        ReceivableApplication.PaymentSeq
                            label is "PaymentSequence"
                    ApplicationAmount.FunctionalAmount.EnteredCurrencyAmount
                        label is "FunctionalAmount"
                column2
                    DebitCustomer
                        label is "Customer"
                    ReceivableApplication.ApplicationSequence
                    ApplicationAmount.CurrencyAmount
                column3
                    ReceivableApplication.TransType
                        label is "TransactionType"
                    AdjustmentSequence
                    ApplicationCurrency
                column4
                    ReceivableApplication.Invoice
                    BaseDebitCreditAdjustAmount
                    ApplicationCurrencyType
            blank line
            header2 of "Credit"
            four column distributed
                column1
                    CreditTransaction.CreditCompany.RepresentativeText
                    CreditTransaction.CreditSequence
                    Status
                column2
                    CreditTransaction.CreditCustomer.RepresentativeText
                    CreditAppliedSequence
                    CreditTransaction.CreditApplicationAmount.FunctionalAmount.EnteredCurrencyAmount
                        label is "FunctionalAmount"
                column3
                    CreditTransaction.CreditType
                    CreditTransaction.CreditNumber
                    CreditTransaction.CreditApplicationAmount.CurrencyAmount
                column4
                    CreditTransaction.CreditBatch
                    CreditTransaction.CreditSuffix
                    CreditAdjustmentSequence
            blank line
            header2 of "Additional"
            four column distributed
                column1
                    Status
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                column2
                    DepositDate
                    ReceivableGeneralLedgerCode
                        label is "ReceivableGlobalLedgerCode"
                column3
                    ReceivableOperator
                    GLOffsetCode
                        label is "GlobalLedgerOffsetCode"
                column4
                    ApplicationSource
