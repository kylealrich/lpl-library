PaymentDistributionForm is a Form
    title is "PaymentDistribution"
    Layout
        single column
            ReceivableCompanyDataGroup.TransactionCompany
                label is "TransactionCompany"
            ReceivableCompanyGroup.GlCompany
                label is "GlobalLedgerCompany"
            visible when (IsNonArPayment)
                ReceivableCompanyDataGroup.ReceivableDistributionCategory
                    label is "DistributionCategory"
            GeneralLedgerAccount
                label is "GlobalLedgerAccount"
                compact format
            DistributionAmount.CurrencyAmount
            Description
        two column
            TaxCode
            Units
        visible when (TaxEntityUsesOneSource)
            two column
                ReceivableCompanyDataGroup.UNSPSCCode
                    compact format
                ReceivableCompanyDataGroup.UNSPSCCode.ShortDescription
                    no label
                    display as text
