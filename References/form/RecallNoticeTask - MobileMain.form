MobileMain is a Form
    title is "Main"
    Layout
        visible when (CanUpdateTaskInstructions)
            single column
                RecallTaskInstruction
                TaskInstructionDescription
                    use text area of 3 lines
        visible when (CannotUpdateTaskInstructions)
            single column
                RecallTaskInstruction
                    display as text
                TaskInstructionDescription
                    display as text
        visible when (not Status.Completed)
            single column
                Priority
                DueDate
        visible when (Status.Completed)
            single column
                Priority
                    display as text
                DueDate
                    display as text
