CloseTaskAtAGlance is a Form
    title is "CloseTask"
    Layout
        header3 of "ScheduleDetails"
        single column independent
            text of "EnterNumberOfDaysFromThePeriodEndDate"
                header4
                bold
                color of blue
        paragraph
            BeginDaysFromPeriodEnd
                label is "Begin"
            BeginTime
                label is "DaysFromPeriodEndAt"
        paragraph
            DueDaysFromPeriodEnd
                label is "Due"
            DueTime
                label is "DaysFromPeriodEndAt"
            DueTimeSensitive
                label is "IsTimeSensitive"
                    left of field
        paragraph
            text of "<NumberOfDaysNote>"
                bold
                align as label
        blank line
        single column independent
            text of "OrEnterASpecificDayOfTheMonthForThePeriod"
                header4
                bold
                color of blue
        paragraph
            BeginDayOfMonth
                label is "Begin"
            BeginLastDayOfMonth
                label is "DayOfTheMonth__Or__BeginOnTheLastDayOfTheMonth"
                    left of field
            BeginTime
                label is "At"
        paragraph
            BeginDayForNextMonth
                label is "ForTheMonthFollowingThePeriod"
        paragraph
            DueDayOfMonth
                label is "Due"
            DueLastDayOfMonth
                label is "DayOfTheMonth__Or_____DueOnTheLastDayOfTheMonth"
                    left of field
            DueTime
                label is "At"
            DueTimeSensitive
                label is "IsTimeSensitive"
                    left of field
        paragraph
            DueDayForNextMonth
                label is "ForTheMonthFollowingThePeriod"
        blank line
        blank line
        two column
            HoursRequired
                label is "EstimatedHoursToComplete"
            ScheduleForWorkDaysOnly
        visible when (TaskOwner not entered)
            blank line
            paragraph
                text of "<UnassignedMessage>"
                    bold
                    color of red
                    align as label
        visible when (not Active)
            single column
                text of "<InactiveMessage>"
                    bold
                    color of red
                    align as label
        visible when (ShowInactiveParentMessageOnDetail)
            single column
                text of "<ParentInactiveMessage>"
                    bold
                    color of red
                    align as label
        visible when (CloseManagementGroup.HasTaskTypes)
            header3 of "TaskType"
            three column distributed
                paragraph
                    PrimaryTaskType
                        label is "Primary"
                        select is PrimaryCloseTaskTypeSelect
                        show up to 10 characters
                    PrimaryTaskType.Description
                        no label
                        display as text
                        show up to 10 characters
                paragraph
                    SecondaryTaskType
                        label is "Secondary"
                        select is SecondaryCloseTaskTypeSelect
                        show up to 10 characters
                    SecondaryTaskType.Description
                        no label
                        display as text
                        show up to 10 characters
                paragraph
                    TertiaryTaskType
                        label is "Tertiary"
                        select is TertiaryCloseTaskTypeSelect
                        show up to 10 characters
                    TertiaryTaskType.Description
                        no label
                        display as text
                        show up to 10 characters
        header3 of "RequirementsForCompletion"
        three column distributed
            RequiresApproval
                label is "Approval"
            visible when (RequiresApproval)
                paragraph
                    ApprovalCode
                        label is "Code"
                        select is ApprovalCodesWithLevels
                        show up to 15 characters
                    ApprovalCode.Description
                        no label
                        display as text
        three column distributed
            RequireSupportingDoco
                label is "AttachSupportingDocumentation"
            RequireJournalEntry
                label is "AttachJournalEntryDetail"
        header3 of "Instructions"
        single column
            TaskDetail
                no label
                align as label
                use text area of 10 lines
        blank line
        visible when (CloseManagementGroup.AllowExternalEmails)
            header3 of "ExternalTaskInitiationEmailNotification"
            single column
                text of "<ExternalEmailUseMessage>"
                    bold
                    align as label
                blank line
                paragraph
                    UseExternalEmailNotification
                        label is "UseExternalEmailNotificationForThisTask"
                    SendExternalEmailOnOpenOfPeriod
                ExternalToEmail
                    label is "To"
                    use text area of 2 lines
                ExternalEmailSubject
                    label is "Subject"
                    use text area of 2 lines
                ExternalEmailContent
                    label is "Content"
