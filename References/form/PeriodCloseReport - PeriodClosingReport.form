PeriodClosingReport is an ActionForm
    action is PeriodCloseReport
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            CreditBalance
                label is "PrintCreditBalances"
        blank line
        single column
            YearEnd
        single column
            Update
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PeriodCloseReportReport_RDG
                SkippedCompanyReport_RDG
            column2 of 25%
                PeriodCloseReportReport_XPT
                SkippedCompanyReport_XPT
