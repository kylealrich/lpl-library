MPurchaseOrderLineDashboardContext is a Form
    title is "PurchaseOrderLineDashboardContext"
    Layout
        single column
            visible when (Item.UseLinkedImage)
                Item.ImageURL
                    display as image
            visible when (not Item.UseLinkedImage)
                Item.Picture.File
                    display as full image up to 5 lines
                        missing image is random background
                            foreground text is "<Item.ItemDescriptionAbbreviation>"
        display as text
            two column distributed
                Company
                EarlyDeliveryDate
                    label is "DeliveryDate"
            two column distributed
                PurchaseOrder
                LineNumber
            two column distributed
                VendorBuyUnitCost
                    label is "UnitCost"
                CalculateExtendedAmount
                    label is "Amount"
            two column distributed
                PurchaseOrder.DerivedPurchaseOrderStatus
                    label is "POStatus"
                DerivedStatus
                    label is "LineStatus"
            visible when (OriginalItemExists)
                Item
                two column distributed
                    visible when (InventoriedOrNonstock)
                        Item.Description
                            no label
                    visible when (not InventoriedOrNonstock)
                        Description
                            no label
                two column distributed
                    OriginalItem
                        label is "OriginalItem"
                            italics
                    OriginalItemRel.Description
                        label is "OriginalItemDescription"
                            italics
                visible when (not OriginalItemExists)
                    Item
                    two column distributed
                        visible when (InventoriedOrNonstock)
                            Item.Description
                                no label
                        visible when (not InventoriedOrNonstock)
                            Description
                                no label
            paragraph
                ItemType
                visible when (ItemType.Service)
                    ServiceCode
            paragraph
                VendorItem
                VendorItem.VendorItemDescription
                    no label
            paragraph
                ShipToLocation
                ShipToLocation.NameForPurchaseOrder
                    no label
            paragraph
                Quantity
                    label is "OrderedQuantity"
                EnteredBuyUOM
                    no label
