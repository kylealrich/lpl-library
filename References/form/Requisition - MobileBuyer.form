MobileBuyer is a Form
    title is "<Buyer.Employee.Name.PreferredFirstAndLastName>'sContactInformation"
    restrict action Unreleased.Create
    restrict action Unreleased.Delete
    restrict action IssueFinal
    restrict action IssueDraft
    restrict action Release
    restrict action Unreleased.RSSLPLCreate
    restrict action Unreleased.RSSLPLDelete
    restrict action Unreleased.RSSLPLShop
    restrict action Unreleased.CreateUsingCopyFromTemplate
    restrict action Unreleased.CreateUsingCopyFromRequisition
    restrict action Unreleased.UpdateRequisitionLineFillOrKill
    restrict action Released.ManualApprove
    restrict action Released.ManualReject
    restrict action Released.ManualUnrelease
    restrict action Unreleased.RSSLPLCopyAllLinesFromRequisition
    Actions
        action is Unreleased.Create
    Layout
        two column
            display as text
                column1
                    Buyer.Employee.ResourcePicture.File
                        display as portrait image
                            missing image is random background
                                foreground text is "<Buyer.Employee.Name.Initials>"
                column2
                    Buyer.Employee.Name.PreferredFirstAndLastName
                        no label
                        header3
                        display as text
                    paragraph
                        Buyer.Employee.EmployeeWorkTelephone
                            label is "WorkPhone"
                        button of icon.phone
                            link is "tel:<Buyer.Employee.EmployeeWorkTelephone>"
                    paragraph
                        Buyer.Employee.EmployeeWorkEmailAddress
                            label is "Email"
                        button of icon.mail
                            link is "mailto:<Buyer.Employee.EmployeeWorkEmailAddress>"
