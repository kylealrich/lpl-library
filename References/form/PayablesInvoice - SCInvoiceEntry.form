SCInvoiceEntry is a Form
    Layout
        visible when (not RecordExists)
            visible when (not TransientSupplierInvoiceType.POMatch)
                visible when (not TransientSupplierInvoiceType.ServiceContract)
                    visible when (not TransientSupplierInvoiceType.Expense)
                        single column
                            TransientSupplierInvoiceType
                                label is "*SelectTheTypeOfInvoiceYouWillBeCreating"
                                    bold
                                display as horizontal radio buttons
            visible when (TransientSupplierInvoiceType.POMatch)
                single column
                    text of "EnterBasicInvoiceInformation.IfInvoiceDateHasNotBeenEntered,ItWillDefaultToTheCurrentDate."
                        bold
                    Company
                        select is SupplierCompanies
                    Invoice
                    FirstPurchaseOrder
                        select is SCMatchPurchaseOrderInvoiceHelperList
                    TransientCreateAllDetails
                        label is "SelectToCreateDetailsForAllOpenPOLines(AndAddOnChargesIfTheyExist);Otherwise,YouWillBeAskedToSelectWhichLinesToInvoice"
                    Description
                    InvoiceDate
                    visible when (not TransientSuppressDueDate)
                        DueDate
                        text of "IfEntered,DueDateWillBeUsedInsteadOfTermsAgreements"
                two column
                    visible when (TransientDisplayTaxAmount)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmountIncludingTax"
                        TaxAmount
                single column
                    visible when (not TransientDisplayTaxAmount)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                    text of "<ActorAgentSupplierGroupRel.InvoiceAttachmentText>"
                        header4
                        italics
                    SupplierInvoiceAttachment.File
                        label is "InvoiceImage"
                    text of "OptionallyAttachAScannedProofOfDeliveryDocument"
                        header4
                        italics
                    SupplierPODAttachment.File
                        label is "ProofOfDelivery"
            visible when (TransientSupplierInvoiceType.ServiceContract)
                single column
                    Company
                        select is SupplierCompanies
                    Invoice
                    ServiceContract
                        select is SCServiceContractsForInvoicing
                    TransientCreateAllDetails
                        label is "SelectToCreateDetailsForAllOpenContractLines;Otherwise,YouWillBeAskedToSelectWhichLinesToInvoice"
                    Description
                    InvoiceDate
                    visible when (not TransientSuppressDueDate)
                        DueDate
                        text of "IfEntered,DueDateWillBeUsedInsteadOfTermsAgreements"
                two column
                    visible when (TransientDisplayTaxAmount)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmountIncludingTax"
                        TaxAmount
                single column
                    visible when (not TransientDisplayTaxAmount)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                    text of "<ActorAgentSupplierGroupRel.InvoiceAttachmentText>"
                        header4
                        italics
                    SupplierInvoiceAttachment.File
                        label is "InvoiceImage"
                    text of "OptionallyAttachAScannedProofOfDeliveryDocument"
                        header4
                        italics
                    SupplierPODAttachment.File
                        label is "ProofOfDelivery"
            visible when (TransientSupplierInvoiceType.Expense)
                single column
                    Company
                        select is SupplierCompanies
                    Invoice
                    Description
                    InvoiceDate
                    visible when (not TransientSuppressDueDate)
                        DueDate
                        text of "IfEntered,DueDateWillBeUsedInsteadOfTermsAgreements"
                            color of blue
                two column
                    visible when (TransientDisplayTaxAmount)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmountIncludingTax"
                        TaxAmount
                single column
                    visible when (not TransientDisplayTaxAmount)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                    text of "<ActorAgentSupplierGroupRel.InvoiceAttachmentText>"
                        header4
                        italics
                    SupplierInvoiceAttachment.File
                        label is "*InvoiceImage"
                    text of "OptionallyAttachAScannedProofOfDeliveryDocument"
                        header4
                        italics
                    SupplierPODAttachment.File
                        label is "ProofOfDelivery"
        visible when (RecordExists)
            visible when (MatchProcessType.ReceiptMatch)
                single column
                    text of "PO_MatchInvoice"
                        bold
            visible when (MatchProcessType.Expense)
                single column
                    text of "ExpenseInvoice"
                        bold
            visible when (MatchProcessType.ServiceContract)
                single column
                    text of "ServiceContractInvoice"
                        bold
            two column
                Company
                    display as text
                Company.Name
                    no label
                    display as text
            single column
                Invoice
                visible when (MatchProcessType.ReceiptMatch)
                    FirstPurchaseOrder
                        display as text
                visible when (MatchProcessType.ServiceContract)
                    ServiceContract
                        display as text
                Description
                InvoiceDate
                visible when (TermsCodeWillDefault)
                    DueDate
                        display as text
                visible when (not TermsCodeWillDefault)
                    visible when (not TransientSuppressDueDate)
                        DueDate
            two column
                visible when (TaxAmount entered)
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmountIncludingTax"
                    TaxAmount
            single column
                visible when (TaxAmount not entered)
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
