MobilePurchaseOrderCommentForm is a Form
    title is "Comment"
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        display as text
        single column
            CommentTitle
                label is "Title"
            CommentType
        paragraph
            Attachment.File
            visible when (CommentType.PrintOnPurchaseOrder)
                SupplierCanView
            visible when (CommentType.PrintOnPurchaseOrderTrailer)
                SupplierCanView
            visible when (CommentType.PrintOnPurchaseOrder)
                SendToVendor
            visible when (CommentType.PrintOnPurchaseOrderTrailer)
                SendToVendor
        single column
            CommentText
                label is "Text"
                use text area
