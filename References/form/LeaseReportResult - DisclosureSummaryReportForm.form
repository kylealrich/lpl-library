DisclosureSummaryReportForm is an ActionForm
    action is CreateDisclosureSummaryReport
    title is "DisclosureSummary"
    Layout
        LeaseAccountingStandard
            label is "AccountingStandard"
        visible when (LeaseAccountingStandard.GASB)
            TransientGASBLease
                label is "AccountingStatement"
        visible when (not LeaseAccountingStandard.GASB)
            LeaseAccountingStatement
                label is "AccountingStatement"
                display as text
        TypeOfReport
            label is "TypeOfReport"
            display as text
        Description
            label is "ReportDescription"
            display as required when (true)
        UseCompanyGroup
            label is "SelectCompanyOrCompanyGroup"
            display as horizontal radio buttons
        visible when (UseCompanyGroup.Company)
            PayablesCompany
                label is "Company"
                display as required when (true)
        visible when (UseCompanyGroup.CompanyGroup)
            CompanyGroup
                label is "CompanyGroup"
                display as required when (true)
        paragraph
            FiscalYear
                label is "FiscalYear"
                display as required when (true)
            Period
                label is "Period"
            FiscalQuarter
                label is "FiscalQuarter"
