Main is a Form
    Layout
        two column distributed
            visible when (not RecordExists)
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
                paragraph
                    CustomerOrderLineMassChange
                        label is "Request"
                        select is ChangeRequests
                    Status
                        no label
                        display as text
        two column distributed
            FromOrder
            ToOrder
        single column
            OrderEntryOperator
                label is "LastUpdated_By"
        two column distributed
            column1
                header2 of "OriginalValue"
                blank line
                paragraph
                    OriginalLocation
                        label is "Location"
                        show up to 16 characters
                paragraph
                    OriginalItem
                        label is "Item"
                        show up to 16 characters
                paragraph
                    OriginalCarrier
                        label is "Carrier"
                        select is ActiveVendorsBySearchName
                paragraph
                    OriginalExpectedShipDate
                        label is "ExpectedShipDate"
                paragraph
                    OriginalRequestDate
                        label is "RequestDate"
                paragraph
                    OriginalEnteredDiscount
                        label is "AdditionalDiscount"
            column2
                header2 of "NewValue"
                blank line
                paragraph
                    NewLocation
                        label is "Location"
                        show up to 16 characters
                paragraph
                    NewItem
                        label is "Item"
                        show up to 16 characters
                paragraph
                    NewCarrier
                        label is "Carrier"
                        select is ActiveVendorsBySearchName
                paragraph
                    NewExpectedShipDate
                        label is "ExpectedShipDate"
                paragraph
                    NewRequestDate
                        label is "RequestDate"
                paragraph
                    NewEnteredDiscount
                        label is "AdditionalDiscount"
