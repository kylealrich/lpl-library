SmartReconDetailMatchComposite is a CompositeForm
    title is "<SmartReconCompositeTitle>"
    context form is SmartReconDetailMatchContext
        background is theme color
    implements DashBoardView
        show context form on top
        show 4 columns
    Actions
        action is SmartReconDetailMatch
            label is "Match"
            hide when invalid
            valid when (AllowDetailMatch)
        action is SmartReconInvoiceMatch
            label is "Match"
            hide when invalid
            valid when (AllowInvoiceMatch)
        action is SelectAllInvoices
            hide when invalid
        action is UnselectAllInvoices
            hide when invalid
        action is SelectAllReceipts
            hide when invalid
        action is UnselectAllReceipts
            hide when invalid
        action is SelectAllInvoiceLines
            hide when invalid
        action is UnselectAllInvoiceLines
            hide when invalid
        action is SelectAllReceiptLines
            hide when invalid
        action is UnselectAllReceiptLines
            hide when invalid
        action is AutoMatch
            label is "CreateAutoSet"
            hide when invalid
        action is MagicInvoiceMatch
            label is "Auto"
            hide when invalid
        action is CostSet
            label is "CreateCostSet"
            hide when invalid
        action is QuantitySet
            label is "CreateQuantitySet"
            hide when invalid
        action is ResetWorkFiles
            label is "RefreshWorkFiles"
            hide when invalid
            valid when (StaleReceiptLines)
        action is previous record
            label is "_"
            mouse over text is "PreviousRecord"
        action is next record
            label is "_"
            mouse over text is "NextRecord"
        action is refresh
            label is "_"
            mouse over text is "Refresh"
    SelectedInvoiceDetail is a Panel
        visible when (ShowDetailMatch)
        double width
        list is PendingSetInvoiceDetailRel.SmartReconInvoiceDetailSelectedList
    SelectedReceiptLines is a Panel
        visible when (ShowDetailMatch)
        double width
        list is PendingSetReceiptLineRel.SmartReconReceiptLineSelectedList
    UnselectedInvoiceDetail is a Panel
        title is "InvoiceLines(<NumberInvoiceDetailsNotSelected>)"
        visible when (ShowDetailMatch)
        double width
        list is MatchWorkInvoiceDetailNotSelectedRel.SmartReconInvoiceDetailNotSelectedList
    UnselectedReceiptLines is a Panel
        title is "ReceiptLines(<NumberReceiptLinesNotSelected>)"
        visible when (ShowDetailMatch)
        double width
        list is PurchaseOrderReceiptLinesNotSelectedRel.SmartReconReceiptLineNotSelectedList
    SelectedInvoices is a Panel
        visible when (ShowInvoiceMatch)
        double width
        list is PendingInvoicesRel.SmartReconInvoiceSelectedList
    SelectedReceipts is a Panel
        visible when (ShowInvoiceMatch)
        double width
        list is PendingReceiptsRel.SmartReconReceiptSelectedList
    UnselectedInvoices is a Panel
        visible when (ShowInvoiceMatch)
        double width
        list is NotSelectedInvoicesRel.SmartReconInvoiceNotSelectedList
    UnselectedReceipts is a Panel
        visible when (ShowInvoiceMatch)
        double width
        list is NotSelectedReceiptsRel.SmartReconReceiptNotSelectedList
    Messages is a Panel
        visible when (ShowMessagesPanel)
        quad width
        list is PayablesInvoice.OpenMatchInvoiceMessagesRel.MatchReconInvoiceMessageReview
    Chargebacks is a Panel
        visible when (ShowChargebackPanel)
        quad width
        list is PayablesInvoice.PayablesInvoiceChargebackRel.ChargebackMatchAnalysisList
