ItemProposalProductSummary is a Form
    title is "Summary"
    Layout
        single column
            display as text
                ProductName
                    label is "ItemName"
                ProductDescription
                    label is "ItemDescription"
                    use text area of 2 lines
                ProposedValue
                    use text area of 2 lines
            text of "Click_FinishToCompleteEntryOfItemDetail;ThenChoose_NextToCreateAttachmentsOr_Propose_ItemToAddDetailForAnotherItem"
                color of blue
        visible when (not ItemProposalFromSupplier)
            button of "Finish"
                link is ProposalWizardList
        visible when (ItemProposalFromSupplier)
            button of "Finish"
                link is SupplierProposalWizardList
