ExecutiveSummaryReportSumForm is a SummaryForm
    title is "_"
    Layout
        header2 of "ExecutiveSummaryReport"
            center
        header5 of "of"
            center
        header2 of "Event\\:_<RepresentativeText>"
            center
        two column
            Buyer.Employee.Name.PreferredFirstAndLastName
                label is "Buyer"
            visible when (not InformalQuote)
                paragraph
                    OpenDate
                        label is "DateRange"
                    text of "-"
                    CloseDate
                        no label
                        display as text
        three column distributed
            NumberOfSupplierNotifications
                label is "SuppliersNotified"
            NumberOfNotifiedSuppliersWhoHaveResponded
                label is "NotifiedSuppliersResponding"
            NumberOfResponses
                label is "AllSuppliersResponding"
        header2 of "SuppliersResponding"
        list is SubmittedResponses.EventResponsesDetailList
        header2 of "EventLinesAndResponses"
        list is ExecutiveEventLinesRel.ExecutiveSummaryEventLineList
        visible when (QuestionsExist)
            header3 of "HeaderQuestionsAndResponses"
            list is SourcingEventQuestionByDisplayRel.QuestionsForExecutiveSummary
        visible when (LineQuestionsExist)
            header3 of "LineQuestionsAndResponses"
            list is SourcingEventLineQuestionRel.ExecutiveSummaryQuestionsPrint
        visible when (ContactsExist)
            header2 of "Contacts"
            list is ExecutiveSummaryEventContactRel.ExecutiveSummaryEventContacts
        visible when (QAndAExists)
            header2 of "QAndA"
            list is SourcingEventQandARel.AdhocQAndAList
        visible when (CommentsExist)
            header2 of "HeaderComments"
            list is SourcingEventComment set.ExecutiveSummaryComment
        visible when (LineCommentsExist)
            header2 of "LineComments"
            list is SourcingEventLineCommentsRel.ExecutiveSummaryLineComment
        visible when (TermsExist)
            header2 of "TermsAndConditions"
            form is SETermsAndConditions
