BankAccountContextForm is a Form
    is primary
    title is "<mode>BankAccount"
    Actions
        action is Create
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    Layout
        two column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivityBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                paragraph
                    CheckDocumentTemplate
                        label is "LaserCheckTemplate"
                paragraph
                    AutoNumberDisbursements
                paragraph
                    Active
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                    visible when (StudentActivitySchool entered)
                        StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                            label is "Currency"
                            display as text
                paragraph
                    Description
                paragraph
                    CheckDocumentTemplate.CheckDocumentTemplateGroup.Title
                        no label
                        display as text
                paragraph
                    visible when (AutoNumberDisbursements)
                        LastDisbursementNumber
                paragraph
                    LastDepositNumber
        two column
            column1
                header3 of "BankActivities"
                paragraph
                    BankAccountActivity
                        compact format
                        select is SchoolActivityAssetAccountList
                    BankAccountActivity.Description
                        no label
                        display as text
                paragraph
                    NonSufficientFundsActivity
                        compact format
                        select is SchoolActivityAssetAccountList
                    NonSufficientFundsActivity.Description
                        no label
                        display as text
                paragraph
                    BankTransactionActivity
                        compact format
                        select is SchoolActivityLiabilityAccountList
                    BankTransactionActivity.Description
                        no label
                        display as text
                paragraph
                    ReconciledVarianceActivity
                        compact format
                        select is SchoolActivityLiabilityAccountList
                    ReconciledVarianceActivity.Description
                        no label
                        display as text
            column2
                header3 of "BankBalances"
                visible when (not ClosedBankStatementsExist)
                    AccountBeginningBalance
                visible when (ClosedBankStatementsExist)
                    LastStatementEndingBalance
                OutstandingDeposits
                    display as text
                OutstandingChecks
                    display as text
                OutstandingAdjustments
                    display as text
                CurrentCashBalance
                    display as text
