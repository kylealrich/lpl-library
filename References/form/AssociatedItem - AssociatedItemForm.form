AssociatedItemForm is a Form
    is primary
    title is "AssociatedItem"
    Layout
        ItemGroup
            label is "ItemGroup"
        Item
            label is "Item"
            link is ItemDashboard
        Item.Description
            label is "ItemDescription"
        AssociatedItem.AssociatedItemSubType
            label is "AssociatedItemSubType"
        visible when (Contract entered)
            paragraph
                Contract
                    label is "Contract"
                    when value changed
                        refresh ContractLine
                ContractLine
                    label is "ContractLine"
                    raise red alert when (ContractLineClosed)
                        mouse over text is "<ContractLineClosedMessage>"
                    raise yellow alert when (ContractLineNotAvailable)
                        mouse over text is "<ContractNotAvailableMessage>"
                    when value changed
                        AssociatedItem.RelatedItem =  ContractLine.ItemNumber
        AssociatedItem.RelatedItem
            label is "RelatedItem"
        visible when (Contract entered)
            ContractLine.ItemDescription
                label is "RelatedItemDescription"
            paragraph
                ContractLine.Manufacturer
                    label is "Manufacturer"
                ContractLine.ManufacturerNumber
                    label is "ManufacturerNumber"
        paragraph
            AssociatedItem.RelatedCompany
                label is "Company"
            AssociatedItem.RelatedLocation
                label is "InventoryLocation"
        paragraph
            EffectiveDate
                label is "EffectiveDate"
                raise yellow alert when (InvalidSpecialItemEffectiveDate)
                    mouse over text is "<EffectiveDateMessage>"
            ExpirationDate
                label is "ExpirationDate"
                raise yellow alert when (InvalidSpecialItemExpirationDate)
                    mouse over text is "<ExpirationDateMessage>"
        Priority
            label is "Priority"
