AdditionalAOCDetailsForm is a Form
    Layout
        three column distributed
            Miscellaneous.Description
                label is "Description"
                display as text
            paragraph
                visible when (Miscellaneous.ChargeType.Percentage)
                    PricePercent
                        display as text
                    CostPercent
                        display as text
                visible when (Miscellaneous.ChargeType.FlatAmount)
                    EnteredPrice.TransactionAmount
                        label is "FlatAmount"
                        display as text
                    Cost
                        display as text
                visible when (Miscellaneous.ChargeType.UnitPrice)
                    visible when (BillingInvoiceLine entered)
                        EnteredUnitPrice.TransactionAmount
                            label is "UnitPrice"
                            display as text
                        UnitCost
                            display as text
                TaxExemptCode
                    label is "TaxExempt"
                    display as text
                visible when (TaxExemptCode.Taxable)
                    TaxableAmount.TransactionAmount
                        label is "Taxable"
                        display as text
        paragraph
            SalesAccount
                compact format
        paragraph
            COGSAccount
                compact format
        visible when (TaxOutputDueAccount)
            paragraph
                EntityTaxCodeRel.TaxOutputDueAccount
                    label is "TaxAccount"
                    display only
                    compact format
        visible when (TaxOutputAccount)
            paragraph
                EntityTaxCodeRel.TaxOutputAccount
                    label is "TaxAccount"
                    display only
                    compact format
