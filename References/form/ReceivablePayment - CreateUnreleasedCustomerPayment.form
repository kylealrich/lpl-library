CreateUnreleasedCustomerPayment is a Form
    use for action Unreleased.CreateCustomerPayment
    Layout
        three column distributed
            column1
                Company
                Customer
                    select is CustomerContextCompanyCustomerSelectList
                BankEntity
            column2
                ReceivablePaymentHeader
                    label is "Batch"
                TransactionAmount
                BankAccountNumber
            column3
                PaymentNumber
                ReferenceNumber
                DerivedStatus
                    label is "Status"
                    display only
