FinanceTeamMemberForm is a Form
    is primary
    propagate as a drill
    title is "Membership_for<FinanceTeam.Description>"
    Actions
        navigation is ResourceInformation
            label is "ViewResource"
        action is save
        action is RemoveMember
    Layout
        three column distributed
            paragraph
                FinanceEnterpriseGroup
                FinanceEnterpriseGroup.EnterpriseGroup.Description
                    no label
                    display as text
            paragraph
                FinanceTeam
                    label is "Team"
                FinanceTeam.Description
                    no label
                    display as text
            paragraph
                FinanceTeamMember.TeamMember
                    label is "Resource"
                    select is SelectResourceNotOnTeam
                FinanceTeamMember.TeamMember.Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
        visible when (TeamMemberEntered)
            header2 of "_"
            display as text
                four column distributed
                    column1
                        FinanceTeamMember.TeamMember.Employee.ResourcePicture.File
                            display as portrait image
                                missing image is random background
                                    foreground text is "<FinanceTeamMember.TeamMember.Employee.Name.Initials>"
                        FinanceTeamMember.TeamMember.DisplayMessage
                            no label
                            use text area of 2 lines
                    column2
                        FinanceResource.Employee.FirstLastNameID
                            label is "Employee"
                            header3
                        visible when (FinanceTeamMember.TeamMember.InactiveResource)
                            text of "ResourceIsInactive"
                                bold
                                align as label
                        FinanceTeamMember.TeamMember.Department
                            label is "Department"
                    column3
                        paragraph
                            FinanceResource.Employee.EmployeeWorkEmailAddress
                                label is "WorkEmail"
                            button of icon.mail
                                visible when (FinanceResource.Employee.EmployeeWorkEmailAddressExists)
                                link is "mailto:<FinanceResource.Employee.EmployeeWorkEmailAddress>"
                    column4
                        paragraph
                            FinanceResource.Employee.EmployeeWorkTelephone
                                label is "WorkPhone"
                            button of icon.phone
                                visible when (FinanceResource.Employee.EmployeeWorkPhoneExists)
                                link is "tel:<FinanceResource.Employee.EmployeeWorkTelephone>"
            header2 of "Preferences"
            two column
                FinanceTeamMember.TeamMember.SendUpdatesAsNotification
                    label is "SendUpdatesAsNotifications"
                FinanceTeamMember.TeamMember.SendUpdatesAsEmail
                    label is "SendUpdatesAsEmails"
