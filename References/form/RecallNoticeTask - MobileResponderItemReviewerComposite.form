MobileResponderItemReviewerComposite is a CompositeForm
    title is "ReviewItemProposal"
    context form is MobileResponderItemReviewerContext
    restrict action MobileAskAQuestion
    Actions
        action is save
            label is "_"
        action is refresh
            label is "_"
        action is ApproveProposedItem
            action icon is approve
            label is "ApproveNewProposedNewItem"
            hide when invalid
            valid when (OpenProposedItemTask)
        action is ApproveProposedItemPendingTrial
            action icon is approve
            label is "ApproveNewProposedNewItemPendingTrial"
            hide when invalid
            valid when (OpenProposedItemTask)
        action is RejectProposedItem
            action icon is reject
            label is "RejectNewProposedNewItem"
            hide when invalid
            valid when (OpenProposedItemTask)
        action is AskAQuestion
            label is "AskCoordinatorAQuestion"
            hide when invalid
    NewProposedItems is a Panel
        list is RecallProductRel.MobileResponderProposedItem
    SupplierAttachments is a Panel
        list is SupplierAttachmentsRel.MobilePortalSummaryRecallReferences
    MyQuestionResponses is a Panel
        visible when (TaskWithQuestions)
        template is RecallNoticeTaskQuestion set
            business class is ResponseToRecallNoticeTaskQuestion
                form is MobileResponderResponseToTaskQuestion
    ReviewerCommentsAndAttachments is a Panel
        title is "MyCommentsAndAttachments<AttachmentCount>"
        list is RecallNoticeTaskAttachment set.MobileItemReviewerRecallNoticeTaskAttachmentList
    QAndAForum is a Panel
        title is "Q&A"
        list is TaskOwnerQandARel.MobileRecallNoticeTaskQAndAList
