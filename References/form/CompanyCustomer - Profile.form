Profile is a Form
    title is "Main"
    Layout
        display as text
            blank line
            two column
                column1 of 50%
                    Customer.RepresentativeText
                        no label
                        header4
                        bold
                column2 of 50%
                    ActiveStatus
                        no label
                        header4
                        right align
                        bold
                        display as tag
                            color of green when (ActiveStatus.Active)
                            color of red when (ActiveStatus.Inactive)
                            color of orange when (ActiveStatus.Delete)
            two column
                column1 of 50%
                    Company.RepresentativeText
                        label is "Company"
                            header4
                            bold
                    Company.Currency
                        label is "CompanyCurrency"
                            header4
                            bold
                    CustomerMajorClass.Description
                        label is "MajorClass"
                            header4
                            bold
                column2 of 50%
                    CustomerRel.CustomerGroup
                        label is "CustomerGroup"
                            header4
                            bold
                    visible when (not NationalAccountIndicator.No)
                        NationalAccountIndicator
                            label is "NationalAccount"
                                header4
                                bold
