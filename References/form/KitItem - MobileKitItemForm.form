MobileKitItemForm is a CompositeForm
    title is "KitItem"
    context form is MobileKitItemContext
    Actions
        action is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is MobileMain
    Options is a Panel
        visible when (MakeCode.MakeToStock)
        form is MobileOptionsForm
    Components is a Panel
        list is KitComponentsRel.MobileComponents
    Instructions is a Panel
        visible when (MakeCode.MakeToOrder)
        list is KitInstructionsRel.MobileKitInstructions
    Byproducts is a Panel
        visible when (MakeCode.MakeToStock)
        list is FinishedGoodsByproductsRel.MobileFinishedGoodByproducts
    Burdens is a Panel
        visible when (MakeCode.MakeToStock)
        list is FinishedGoodsBurdensRel.MobileBurdens
    Comments is a Panel
        list is KitItemComment set.MobileKitItemCommentList
