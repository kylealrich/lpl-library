AccountingUnitCreateMainForm is a Form
    title is "Main"
    Layout
        single column
            visible when (not RecordExists)
                CreateAccountingUnitType
                    label is "Type"
            visible when (RecordExists)
                AccountingUnitType
                    label is "Type"
                    display only
        two column
            AccountingUnit
                label is "<FinanceEnterpriseGroup.AccountingUnitLabel>"
            visible when (CreateAccountingUnitType.Summary)
                DisplayAccountingUnit
                    label is "Display<FinanceEnterpriseGroup.AccountingUnitLabel>"
                    display only
            Description
        single column
            visible when (UsedForFundAccounting)
                FundType
                    label is "FundType"
        single column
            effective date
                label is "Effective_Date"
        visible when (false)
            single column
                AccountingUnitStructure
        visible when (CreateAccountingUnitType.Summary)
            single column
                BudgetIdentifier
        visible when (CreateAccountingUnitType.Posting)
            single column
                Active
                SystemAccountingUnit
                    label is "System<FinanceEnterpriseGroup.AccountingUnitLabel>"
                InterEntityAccountingUnit
                    label is "Inter<FinanceEnterpriseGroup.AccountingEntityLabel>_<FinanceEnterpriseGroup.AccountingUnitLabel>"
                IncludeInBudgetEdit
        visible when (CanDefineZones)
            visible when (false)
                single column
                    TransientContextAccountingUnit
                        label is "ContextDimension"
            two column
                IsAZoneAccountingUnit
                    label is "IsAZone"
                visible when (IsAZoneAccountingUnit)
                    visible when (not CreateAccountingUnitType.Posting)
                        ZoneAccountingUnit
                            label is "Zone<FinanceEnterpriseGroup.AccountingUnitLabel>"
                            select is ZonePostingAccountingUnits
                visible when (not IsAZoneAccountingUnit)
                    ZoneAccountingUnit
                        label is "Zone<FinanceEnterpriseGroup.AccountingUnitLabel>"
                        display only
            two column
                EntityZoneAccountingUnit
                    label is "EntityZone<FinanceEnterpriseGroup.AccountingUnitLabel>"
                DefaultZoneAccountingUnit
                    label is "DefaultZone<FinanceEnterpriseGroup.AccountingUnitLabel>"
        visible when (IsAchild)
            two column
                DerivedParentDisplayAccountingUnit
                    label is "Parent<FinanceEnterpriseGroup.AccountingUnitLabel>"
                    display only
                DerivedParentDescription
                    no label
                    display as text
        blank line
        blank line
        header2 of "AddressInformation"
        two column
            AddressCode
            AddressCode.Description
                no label
                display as text
        visible when (AddressCode entered)
            single column
                AddressCode.PersonResponsible
                    label is "PersonResponsible"
                    display as text
                AddressCode.PostalAddress.Country
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine1
                    label is "StreetAddress"
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine2
                    no label
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine3
                    no label
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine4
                    no label
                    display as text
                AddressCode.PostalAddress.Municipality
                    label is "City"
                    display as text
                AddressCode.PostalAddress.StateProvince
                    label is "State/Province"
                    display as text
                AddressCode.PostalAddress.PostalCode
                    label is "PostalCode"
                    display as text
                AddressCode.PostalAddress.County
                    label is "County/District"
                    display as text
                AddressCode.PostalAddress.Type
                    label is "Type"
                    display as text
                AddressCode.TelephoneNumber
                    label is "TelephoneNumber"
                    display as text
                AddressCode.FaxNumber
                    label is "FaxNumber"
                    display as text
                AddressCode.EmailAddress
                    label is "EmailAddress"
                    display as text
