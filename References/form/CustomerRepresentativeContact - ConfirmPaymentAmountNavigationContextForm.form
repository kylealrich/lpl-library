ConfirmPaymentAmountNavigationContextForm is a Form
    title is "ConfirmPaymentAmount"
    Layout
        display as text
            visible when (PaymentInProgress)
                five column
                    column1
                        text of "TotalRequestedAmountToPay"
                            header3
                            bold
                    column2
                        DerivedTotalPortalRequestedAppliedAmount
                            no label
                            header3
                            color of green
                    column3
                        text of "(\\U\\S\\D)"
                            header3
                            bold
                            color of green
                    column4
                        text of "_____WhenReadyToCheckOut:"
                            header3
                    column5
                        button of "EnterPaymentInformation"
                            link is external "<ReceivablePortalPaymentHeader1Rel.ThirdPartyPaymentProcessingGeneratedPayFormLink>"
                            is primary
            visible when (PaymentInProgress)
                paragraph
                    text of "___*Please_note_that_the_above_button_has_an_expiration_period_of_5_minutes."
                        header3
                        color of blue
            visible when (PaymentInProgress)
                paragraph
                    text of "___**After_clicking_the_above_button_and_payment_information_has_been_submitted,_please_click_the_Refresh_Icon."
                        header3
                        bold
                        color of blue
            visible when (not PaymentInProgress)
                two column
                    column1
                        text of "ClickThisButtonToNavigateBackToInvoiceList"
                            header3
                            bold
                    column2
                        button of "NavigateBackToInvoiceList"
                            link is CustomerInvoicesNavigation
                            is primary
