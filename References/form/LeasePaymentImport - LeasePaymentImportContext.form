LeasePaymentImportContext is a Form
    Layout
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        paragraph
                            LeasePaymentImport
                                label is "RunGroup"
                    column2
                        paragraph
                            Lease.CompanyRepresentativeText
                    column3
                        paragraph
                            Lease.Currency
        visible when (not RecordExists)
            two column distributed
                column1
                    paragraph
                        LeasePaymentImport
                            label is "RunGroup"
                column2
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
