DisplayEmployeeInformation is a Form
    title is "<Name.PreferredFirstAndLastName>'sContactInformation"
    Layout
        two column
            display as text
                column1
                    ResourcePicture.File
                        display as portrait image
                            missing image is random background
                                foreground text is "<Name.Initials>"
                column2
                    Name.PreferredFirstAndLastName
                        no label
                        header3
                    paragraph
                        EmployeeWorkTelephone
                            label is "Phone"
                        visible when (EmployeeWorkPhoneExists)
                            button of icon.phone
                                link is "tel:<EmployeeWorkTelephone>"
                    paragraph
                        EmployeeWorkEmailAddress
                            label is "Email"
                        visible when (EmployeeWorkEmailAddressExists)
                            button of icon.mail
                                link is "mailto:<EmployeeWorkEmailAddress>"
