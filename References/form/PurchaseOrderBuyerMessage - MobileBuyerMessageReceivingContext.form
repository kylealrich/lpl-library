MobileBuyerMessageReceivingContext is a Form
    title is "BuyerMessage"
    Layout
        two column distributed
            column1
                PurchaseOrderReceipt
                    label is "Receipt"
                    display as text
                PurchaseOrder
                    display as text
            column2
                PurchaseOrderReceiptLine.PurchaseOrderLine.LineNumber
                    label is "Line"
                    display as text
                Status
                    display as tag
                        color of red when (Status.Unreleased)
                        color of green when (Status.Released)
        single column
            Buyer.Employee.FirstLastName
                label is "Buyer"
                display as text
        single column
            visible when (VendorUnitCostMessage)
                TransientUnitCost
                NoVendorCost
                    no label
                    display as text
            visible when (not VendorUnitCostMessage)
                TransientUnitCost
                    display as text
