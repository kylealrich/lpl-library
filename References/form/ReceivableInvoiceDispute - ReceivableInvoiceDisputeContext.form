ReceivableInvoiceDisputeContext is a Form
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        Company
                            select is Companies
                        Company.Name
                            no label
                    paragraph
                        CustomerComments
                        button of "CustomerComments"
                            list is CompanyCustomerCommentRel.CompanyCustomerCommentList
                column2
                    paragraph
                        Customer
                            select is GroupSearchName
                        Customer.Name
                            no label
                    visible when (IsOpenDisputes)
                        paragraph
                            TransactionComments
                            button of "TransactionComments"
                                list is CompanyCustomerTransactionCommentRel.TransactionCommentsList
                    visible when (IsClosedDispute)
                        paragraph
                            TransactionComments
                            button of "TransactionComments"
                                list is CompanyCustomerTransactionCommentRel.TransactionCommentsList
                column3
                    paragraph
                        Company.Currency
                            label is "Currency"
                            display as text
                    visible when (IsOpenDisputes)
                        paragraph
                            Status
                    visible when (IsClosedDispute)
                        paragraph
                            Status
