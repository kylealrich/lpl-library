POLineCostDashboardForm is a Form
    title is "POLineCost"
    Layout
        display as text
            two column distributed
                column1
                    paragraph
                        VendorBuyUnitCost
                            label is "UnitCost"
                        PurchaseOrder.Currency
                            label is "Currency"
                        EnteredBuyUOM
                            label is "UOM"
                    paragraph
                        ExtendedAmount
                            label is "ExtendedLine"
                    paragraph
                        AddOnChargesForALineForUI
                            label is "TotalAddOnCharge"
                    paragraph
                        OrderedAmount
                            label is "Ordered"
                    paragraph
                        LandedUnitCost
                column2
                    paragraph
                        CostCode
                            label is "CostSource"
                        visible when (not CostOption.CostRequired)
                            CostOption
                    visible when (Taxable)
                        paragraph
                            visible when (HasInvoicedTaxAmount)
                                InvoicedTaxAmount
                                    label is "InvoicedTax"
                            visible when (HasAccruedTaxAmount)
                                AccruedTaxAmount
                                    label is "AccruedTax"
                    visible when (not ItemType.Service)
                        paragraph
                            DerivedNonServiceMatchedAmount
                                label is "Matched"
                        paragraph
                            DerivedMatchedNotReceivedAmount
                                label is "MatchedNotReceived"
                    visible when (ItemType.Service)
                        paragraph
                            MatchServiceAmount
                                label is "MatchedService"
                    paragraph
                        OpenToMatchAmount
                            label is "OpenToMatch"
                    paragraph
                        ServiceCancelAmount
                            label is "Canceled"
