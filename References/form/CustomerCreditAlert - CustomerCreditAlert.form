CustomerCreditAlert is an ActionForm
    action is CustomerCreditAlert
    Layout
        paragraph
            CustGroup
                label is "CustomerGroup"
                select is CustomerGroups
            CustGroup.Name
                no label
                display as text
        single column
            CrVarPct
                label is "OverLimitPercent"
        single column
            text of "Or"
        single column
            PctOfLimit
                label is "Percent_ofCreditLimit"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CustomerCreditAlertReport_RDG
            column2 of 25%
                CustomerCreditAlertReport_XPT
