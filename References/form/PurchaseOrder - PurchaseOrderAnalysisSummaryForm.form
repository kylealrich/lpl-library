PurchaseOrderAnalysisSummaryForm is a SummaryForm
    title is "PurchaseOrderAnalysis"
    Layout
        two column
            column1
                PurchaseOrder
                Company.RepresentativeText
                Vendor.RepresentativeText
                CalculateTotalAmount
                    display when blank
                OpenPurchaseAmount
                    display when blank
                TotalCanceledAmmount
                    display when blank
            column2
                PurchaseOrderDate
                DefaultDeliveryDate
                ShipToLocation
                DerivedPurchaseOrderStatus
                    display as tag
                        color of yellow when (PurchaseOrderLifeCycleState.CreateInProgress)
                        color of yellow when (PurchaseOrderLifeCycleState.Unreleased)
                        color of yellow when (PurchaseOrderLifeCycleState.ReleaseInProgress)
                        color of green when (PurchaseOrderLifeCycleState.Released)
                        color of gray when (PurchaseOrderLifeCycleState.Closed)
                        color of gray when (PurchaseOrderLifeCycleState.Historical)
                        color of red when (PurchaseOrderLifeCycleState.CancelInProgress)
                        color of red when (PurchaseOrderLifeCycleState.Canceled)
                        color of gray when (PurchaseOrderLifeCycleState.Deleted)
                        color of yellow when (PurchaseOrderLifeCycleState.DeleteInProgress)
        list is PurchaseOrderLineRel.POLineAnalysisList
        visible when (ReleasedInvoicesExist)
            list is PurchaseOrderReleasedInvoiceRel.InvoicesForAPurchaseOrderForAnalysisReport
        visible when (CommitmentsExist)
            text of "Encumbrances"
                bold
            list is GLCommitDrillRel.POContractAnalysis
        visible when (AnyAddOnChargesExistForVendor)
            list is PurchaseOrderAndLineAddOnChargesByVendorRel.AllAddOnChargesForPOAnalysis
