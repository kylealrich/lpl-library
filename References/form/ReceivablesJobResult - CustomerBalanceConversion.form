CustomerBalanceConversion is a Form
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        PrmCustomerGroup
                            label is "CustomerGroup"
                            select is CustomerGroups
                        PrmCustomerGroup.Name
                            no label
                    PrmDetailOption
                        label is "PrintBalanceDetail"
                column2
                    PrmChangesOnly
                        label is "DifferencesOnly"
                    CustomerRange.FromCustomer
                        label is "CustomerRange"
                    CustomerRange.ToCustomer
                        label is "-"
                column3
                    Status
                        display as tag
                            color of gray when (Status.InProcess)
                            color of green when (Status.Complete)
                            color of red when (Status.Incomplete)
                    PrmUpdate
                        label is "UpdateOption"
