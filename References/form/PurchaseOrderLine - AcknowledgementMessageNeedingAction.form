AcknowledgementMessageNeedingAction is a CompositeForm
    title is "ManageAcknowledgement"
    context form is AcknowledgementMessageNeedingActionContext
        background is theme color
    restrict action CancelLine
    Actions
        action is RemoveMessage
            action icon is delete
        action is AssignProcessor
        action is AddAcknowledgementComment
        action is UpdatePOLineFromAcknowledgement
            hide when invalid
    Detail is a Panel
        title is "Main"
        form is AcknowledgementMessageMainDetail
    AcknowledgementComment is a Panel
        title is "Comment"
        list is AcknowledgementPurchaseOrderLineCommentRel.PurchaseOrderLineCommentList
    AcknowledgementMessages is a Panel
        title is "Messages<AcknowledgementMessagePanelCount>"
        visible when (MultipleAcknowledgementMessages)
        list is POAcknowledgementMessagesNeedingActionRel.AcknowledgementMessagesForAPOLineList
