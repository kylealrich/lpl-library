StockIssue is an ActionForm
    action is StockIssue
    title is "StockIssue"
    Layout
        display as text
            three column distributed
                RecallNotice.RepresentativeText
                paragraph
                    RecallProduct
                    RecallProduct.ProductName
                        no label
                paragraph
                    RecallProductItem
                    RecallProductItem.Description
                        no label
        paragraph
            Quantity
            Uom
                no label
                display as text
        paragraph
            ActionType
                no label
                display as horizontal radio buttons
        visible when (ActionType.Create)
            four column
                visible when (Company entered)
                    Company.RepresentativeText
                        display as text
                visible when (Company not entered)
                    InventoryDocumentGroup.InventoryCompany
                    InventoryDocumentGroup.InventoryCompany.Name
                        no label
                        display as text
                InventoryDocumentGroup.ToCompanyLocationGroup.ToCompany
                    label is "ToCompany"
                InventoryDocumentGroup.ToCompanyLocationGroup.ToCompany.Name
                    no label
                    display as text
            four column
                visible when (InventoryLocation entered)
                    InventoryLocation.RepresentativeText
                        display as text
                visible when (InventoryLocation not entered)
                    InventoryDocumentGroup.InventoryLocation
                        label is "InventoryLocation"
                    InventoryDocumentGroup.InventoryLocation.Name
                        no label
                        display as text
                InventoryDocumentGroup.ToCompanyLocationGroup.RequestingLocation
                    label is "RequestingLocation"
                InventoryDocumentGroup.ToCompanyLocationGroup.RequestingLocation.Name
                    no label
                    display as text
        visible when (ActionType.Append)
            paragraph
                InventoryDocumentGroup.InventoryCompany
                InventoryDocumentGroup.InventoryCompany.Name
                    no label
                    display as text
            paragraph
                InventoryDocumentGroup.InventoryLocation
                    label is "InventoryLocation"
                InventoryDocumentGroup.InventoryLocation.Name
                    no label
                    display as text
        paragraph
            InventoryDocumentGroup.Bin
                label is "Bin"
        visible when (ActionType.Create)
            paragraph
                TranDate
                    label is "IssueDate"
                PostDate
            blank line
            paragraph
                InventoryDocumentGroup.InventoryTransaction
                InventoryDocumentGroup.InventoryCompany.IssuesDocumentText
                    no label
                    display as text
        visible when (ActionType.Append)
            paragraph
                InventoryDocumentGroup.InventoryTransaction
                    label is "Document"
                    select is InventoryIssueDocuments
        visible when (RecallProductItem.CatchWeight)
            blank line
            paragraph
                CtwSecondaryQty
                    label is "SecondaryQuantity"
                RecallProductItem.Item.SecondaryUOM
                    no label
                    display as text
