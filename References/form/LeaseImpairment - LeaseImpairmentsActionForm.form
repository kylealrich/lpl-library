LeaseImpairmentsActionForm is an ActionForm
    action is LeaseImpairmentsTransfer
    title is "LeaseImpairmentsTransfer"
    Layout
        paragraph
            PrmTransferOption
        paragraph
            PrmCompany
                label is "Company"
        paragraph
            visible when (PrmTransferOption.TransferImpairments)
                PrmReasonCode
                    label is "ReasonCode"
        paragraph
            PrmSelectLease
                label is "SelectLease"
        paragraph
            visible when (PrmSelectLease)
                PrmLease
                    label is "Lease"
