MInvoiceOptions is a Form
    title is "InvoiceOptions"
    Layout
        header2 of "Billing"
        visible when (not IsManualInvoiceNumbering)
            paragraph
                OriginalBillingInvoice.InvoicePrefix
                    label is "OriginalInvoice"
                OriginalBillingInvoice.InvoiceNumber
                    no label
        visible when (IsManualInvoiceNumbering)
            paragraph
                OriginalBillingInvoiceRel.DerivedDisplayBillingInvoice
                    label is "OriginalInvoice"
        single column
            AutoApply
        paragraph
            TermsCode
            TermsDescription1
                no label
                display as text
            visible when (IsTermsDescription)
                TermsDescription2
                    no label
                    display as text
        paragraph
            BankTransactionCode
                label is "PaymentCode"
            BankTransactionCode.Description
                no label
                display as text
        paragraph
            ReceivableGeneralLedgerCode
                label is "AccountsReceivableCode"
            ReceivableGeneralLedgerCode.Description
                no label
                display as text
        single column
            EnteredDiscount.TransactionAmount
                label is "AdditionalDiscount"
        paragraph
            HoldCode
            HoldCode.Description
                no label
                display as text
        paragraph
            InvoiceTypeCode
                select is CustomerInvoiceTypeCodeList
            InvoiceTypeCode.Description
                no label
                display as text
        single column
            RegimeCode
        header2 of "Dates"
        single column
            GeneralLedgerDate
                label is "GlobalLedgerPostingDate"
            PriceDate
                label is "PricingDate"
            ShipDate
                label is "ShippingDate"
        header2 of "BillTo"
        paragraph
            BillTo
            BillTo.Name
                no label
                display as text
        visible when (BillTo entered)
            display as text
                single column
                    BillTo.PostalAddress.DeliveryAddress.AddressLine1
                        label is "StreetAddress"
                    BillTo.PostalAddress.DeliveryAddress.AddressLine2
                        no label
                    BillTo.PostalAddress.DeliveryAddress.AddressLine3
                        no label
                    BillTo.PostalAddress.DeliveryAddress.AddressLine4
                        no label
                two column distributed
                    BillTo.PostalAddress.Municipality
                        label is "City"
                    BillTo.PostalAddress.StateProvince
                        label is "State/Province"
                    BillTo.EmailAddress
                    BillTo.PostalAddress.Country
                    BillTo.PostalAddress.PostalCode
                        label is "PostalCode"
                    BillTo.Contact
