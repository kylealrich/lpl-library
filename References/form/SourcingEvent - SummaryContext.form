SummaryContext is a Form
    Layout
        paragraph
            text of "<AmendmentInProgress>"
            button of "RespondNow"
                visible when (DisplayRespondNowButton)
                form invoke is CreateDraftSourcingEventResponse
            visible when (DisplayResponseText)
                text of "ToRespondToThisEvent,RegisterAsASupplier;SearchForAndOpenEvent;ClickRespondNow"
                    color of blue
            button of "EditResponse"
                visible when (DisplayEditResponseButton)
                form invoke is CreateDraftSourcingEventResponse
            button of "EnterPricing"
                visible when (DisplayEnterPricingButton)
                form invoke is CreateDraftSourcingEventResponse
            button of "EnterBestAndFinal"
                visible when (DisplayEnterBestAndFinalButton)
                form invoke is CreateDraftSourcingEventResponse
            button of "ViewResponse"
                visible when (DisplayViewResponseButton)
                link is SupplierResponseCompositeNav
            button of "AskAQuestion"
                visible when (DisplayQandAButton)
                form invoke is SupplierCreateDraftSourcingEventQandA
        three column
            display as text
                SourcingEvent
                    label is "Event"
                LastVersionNumber
                    label is "Version"
                Name
                    label is "EventName"
