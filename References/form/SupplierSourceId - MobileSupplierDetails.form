MobileSupplierDetails is a Form
    title is "SupplierDetails"
    Layout
        display as text
            visible when (not Supplier.HasPicture)
                paragraph
                    Supplier.SupplierName
                        no label
                        header3
                        color of blue
            visible when (Supplier.HasPicture)
                two column
                    column1
                        Supplier.Picture.File
                            display as portrait image up to 3 lines
                    column2
                        Supplier.SupplierName
                            no label
                            header3
                            color of blue
            paragraph
                visible when (Supplier.DoingBusinessAs entered)
                    button of icon.roles
                    Supplier.DoingBusinessAs
            paragraph
                button of icon.connections
                Supplier.BusinessType
            paragraph
                button of icon.expense-report
                    align as label
            paragraph
                visible when (Supplier.DandBNbr entered)
                    button of icon.line-bar-chart
                    Supplier.DandBNbr
                        label is "Dun&Bradstreet"
            paragraph
                visible when (Supplier.WebAddress entered)
                    button of icon.url
                    button of "<Supplier.WebAddress>"
                        link is "<Supplier.WebAddress>"
                        display as link
            paragraph
                button of icon.home
                Supplier.FullAddressDisplay
                    no label
            single column
                visible when (Supplier.SameAsAddressAbove)
                    SameAddressTag
                        no label
                        display as tag
                            color of blue
            paragraph
                visible when (not Supplier.SameAsAddressAbove)
                    button of icon.home
                    Supplier.FullRemitDisplay
                        no label
            paragraph
                button of icon.edit
                    link is SupplierNav
                button of "EditSupplierDetails"
                    link is SupplierNav
                    display as link
