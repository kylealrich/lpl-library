CreatePurchaseOrderForm is an ActionForm
    action is CreatePurchaseOrder
    title is "CreatePurchaseOrder"
    Layout
        single column
            text of "SelectedPurchaseRequest:<SelectedInterfacesByActorCount>"
                header4
                bold
                italics
                color of blue
        header5 of "PurchasingCompany"
        paragraph
            PrmCompany
                no label
            PrmCompany.Name
                no label
                display as text
        single column
            text of "PurchaseRequestsForSelectedCompanyWillBeProcessed."
                color of blue
        header2 of "NewPurchaseOrderValues"
        paragraph
            PrmVendor
            PrmVendor.VendorName
                no label
                align as label
                display as text
        paragraph
            PrmPurchaseFromLocation
                label is "PurchaseFromLocation"
                show up to 10 characters
            PrmPurchaseFromLocation.VendorName
                no label
                align as label
                display as text
        paragraph
            PrmBuyer
                label is "Buyer"
                show up to 10 characters
            PrmBuyer.Employee.Name.PreferredFirstAndLastName
                no label
                display as text
        single column
            PrmDefaultDeliveryDate
                label is "EarlyDeliveryDate"
                raise blue alert when (true)
                    mouse over text is "ThisWillDefaultDatesFromPurchaseRequest"
        paragraph
            PrmPOCodeOverride
                label is "POCodeOverride"
            visible when (PrmPOCodeOverride)
                PrmPOCode
                    label is "P\\OCode"
        header2 of "CreationOptions"
        two column distributed
            PrmReleasePurchaseOrder
                label is "ReleasePurchaseOrder"
            PrmCombine
                label is "Combine_to_a_singlePOLine"
        header5 of "A_Notification_will_be_sent_after_thePurchaseOrder_is_created.View_\\'My_\\Actions'_to_see_the_PurchaseOrder_creation_status."
