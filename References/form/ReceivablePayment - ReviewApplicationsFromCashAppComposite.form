ReviewApplicationsFromCashAppComposite is a CompositeForm
    title is "ReviewApplications<BatchPaymentNumberAndCompanyTitle>"
    context form is ReviewPaymentApplicationsContextForm
        background is theme color
    Actions
        action is Unreleased.DeleteAllApplications
            action icon is delete
            label is "DeleteUnpostedApplications"
            hide when invalid
        action is Open.DeleteAllApplications
            action icon is delete
            label is "DeleteUnpostedApplications"
            hide when invalid
        action is FullyApplied.DeleteAllApplications
            action icon is delete
            label is "DeleteUnpostedApplications"
            hide when invalid
        action is UpdateUnpostedApplicationGeneralLedgerDates
            action icon is edit
            label is "UpdateGlobalLedgerDates"
            hide when invalid
    Applications is a Panel
        visible when (not IsZeroPayment)
        list is ReceivableApplicationRel.PaymentApplications
    ZeroAmountPaymentApplications is a Panel
        visible when (IsZeroPayment)
        list is ReceivableApplicationRel.ZeroAmountPaymentApplications
