CashAllocationCode is a Form
    title is "CashAllocationCode"
    Layout
        two column
            column1
                CashAllocationCode
                AllocationType
                visible when (AllocationType.Amount)
                    ControlTotal
                visible when (AllocationType.Percent)
                    PercentDifference
                        display as text
            column2
                Description
                Active
                    display as text
                    display as tag
                        color of red when (not Active)
                        color of green when (Active)
                visible when (AllocationType.Amount)
                    AmountDifference
                        display as text
