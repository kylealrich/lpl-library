MobileUpdateSupplierBankInformation is an ActionForm
    action is MobileUpdateSupplierBankInformation
    title is "UpdateSupplierBankInformation"
    Layout
        paragraph
            Supplier.BankInformationGroup.Country
                display as text
        visible when (Supplier.BankInformationGroup.DisplayBankEntity)
            paragraph
                ParmBankEntity
                    label is "<Supplier.BankInformationGroup.DerivedBankEntityLabel>"
                visible when (BankInformationGroup.EntityConfirmationRequired)
                    ConfirmBankEntity
                        label is "Confirm<Supplier.BankInformationGroup.DerivedBankEntityLabel>"
            paragraph
                visible when (Supplier.BankInformationGroup.BankEntityExists)
                    Supplier.BankInformationGroup.BankEntity.BankName
                        no label
                        display as text
                visible when (not Supplier.BankInformationGroup.BankEntityExists)
                    Supplier.BankInformationGroup.BankEntityName
                        no label
                        display as text
                ParmBankEntityName
        visible when (Supplier.BankInformationGroup.DisplayBankAccountNumber)
            paragraph
                visible when (not BankInformationGroup.MaskBankInformationEntry)
                    ParmBankAccountNumber
                        label is "<Supplier.BankInformationGroup.DerivedBankAccountNumberLabel>"
                visible when (BankInformationGroup.MaskBankInformationEntry)
                    ParmBankAccountNumber
                        label is "<Supplier.BankInformationGroup.DerivedBankAccountNumberLabel>"
                        hidden entry
                visible when (BankInformationGroup.BankAccountNumberConfirmationRequired)
                    visible when (not BankInformationGroup.MaskBankInformationEntry)
                        ConfirmBankAccountNumber
                            label is "Confirm<Supplier.BankInformationGroup.DerivedBankAccountNumberLabel>"
                    visible when (BankInformationGroup.MaskBankInformationEntry)
                        ConfirmBankAccountNumber
                            label is "Confirm<Supplier.BankInformationGroup.DerivedBankAccountNumberLabel>"
                            hidden entry
        visible when (Supplier.BankInformationGroup.DisplayBankAccountType)
            paragraph
                ParmBankAccountType
                    label is "BankAccountType"
        visible when (Supplier.BankInformationGroup.DisplayBankCurrency)
            paragraph
                ParmBankCurrency
                    label is "BankCurrency"
        visible when (Supplier.BankInformationGroup.DisplayCrossBorderIdentifier)
            paragraph
                ParmCrossBorderIdentifier
                    label is "CrossBorderIdentifier"
        visible when (Supplier.BankInformationGroup.DisplayBankingCode)
            paragraph
                ParmBankingCode
                    label is "BankingCode"
        two column
            column1 of 50%
                visible when (Supplier.BankInformationGroup.DisplaySwiftID)
                    ParmSwiftID
                        label is "SwiftID"
                visible when (Supplier.BankInformationGroup.DisplayAssignmentNumber)
                    ParmAssignmentNumber
                        label is "AssignmentNumber"
            column2 of 50%
                visible when (Supplier.BankInformationGroup.DisplayBankID)
                    ParmBankID
                        label is "BankID"
                visible when (Supplier.BankInformationGroup.DisplayGiroNumber)
                    ParmGiroNumber
                        label is "GiroNumber"
        paragraph
            visible when (Supplier.BankInformationGroup.DisplayBACSReference)
                ParmBACSReference
                    label is "BACSReference"
            visible when (Supplier.BankInformationGroup.DisplayBACSName)
                ParmBACSName
                    label is "BACSName"
        visible when (Supplier.BankInformationGroup.DisplayCreditCardNumber)
            paragraph
                Supplier.BankInformationGroup.DerivedDisplayCreditCardNumber
                    label is "CreditCardNumber"
                    display as text
                    show up to 16 characters
                visible when (not BankInformationGroup.MaskBankInformationEntry)
                    ParmCreditCardNumber
                        no label
                        show up to 16 characters
                visible when (BankInformationGroup.MaskBankInformationEntry)
                    ParmCreditCardNumber
                        no label
                        hidden entry
                        show up to 16 characters
