AutomationReplicationClassContext is a Form
    title is "ReplicationClass"
    Layout
        single column
            paragraph
                ReplicationSet
        paragraph
            valid when (CanEditBaseFields)
                BusinessClass
                    when value changed
                        refresh DisplayBackfill
                        refresh CanChangeBackfill
                        refresh CanEnableIndicator
                        EnableIndicator =  CanEnableIndicator
            valid when (DeveloperMode)
                Delivered
            Inactive
            visible when (BusinessClass.ImplementsParentHierarchy)
                ParentHierarchyLevels
            visible when (ExpectedNumberOfRecordsIsValid)
                ExpectedNumberOfRecords
                    display as text
                    mouse over text is "ExpectedNumberOfRecordsInTheTargetSystem.IfTheTargetSystemHasNotBeenMaintained,ThisMayNotMatch."
        two column
            valid when (CanEditBaseFields)
                valid when (not ReplicationSet.ExportFormat.COLUMNAR)
                    ReplicateClassName
                        label is "ReplicateClass"
                        mouse over text is "DefaultsToBusinessClassName"
            paragraph
                OverrideReplicationSetTimeStorageResolution
                    when value changed
                        TimeStorageResolution =  ReplicationSet.TimeStorageResolution
                valid when (OverrideReplicationSetTimeStorageResolution)
                    TimeStorageResolution
        paragraph
            visible when (CanFlattenHierarchy)
                ColumnarFlattenHierarchy
            visible when (ColumnarFlattenHierarchy)
                NumberOfHierarchyLevels
                AlwaysRebuild
            visible when (not ReplicationSet.ExportFormat.COLUMNAR)
                AlsoRepToColumnar
                    label is "AlsoReplicateToColumnar"
            visible when (ReplicationSet.ExportFormat.COLUMNAR)
                UseColumnarVariationPattern
        paragraph
            DisableIncrementalReplication
                mouse over text is "DisablingIncrementalReplicationWillCauseAllDataToExportWithEachReplicationRun"
                when value changed
                    refresh CanEnableIndicator
                    refresh CanChooseIndicator
                    refresh ShowReRepFields
                    EnableIndicator =  CanEnableIndicator
                    IncrementalIndicatorField =  blank
            valid when (CanEnableIndicator)
                EnableIndicator
                    label is "EnableIndicatorReplication"
                    mouse over text is "WillReplicateBasedOnTheIndicatorFieldInsteadOfTheUpdateTimestamp"
                    when value changed
                        refresh ShowReRepFields
                        refresh CanChooseIndicator
                        IncrementalIndicatorField =  DefaultIndicatorField
            valid when (CanChooseIndicator)
                IncrementalIndicatorField
                    label is "IndicatorField"
                CreateOnly
                    mouse over text is "WhenSelected,UpdatesAreSentAsCreates"
                IgnoreIndicatorOnFullReplication
                    mouse over text is "WhenSelectedAndAFullReplicationIsDone,RecordsThatMatchTheIndicator_'From'_and_'To'_valuesAreIncluded"
        paragraph
            valid when (ShowReRepFields)
                ReReplicateOnAnyChange
                    label is "Re\\-ReplicateOnAnyChange"
                    when value changed
                        refresh CanEnableIndicator
                        ReReplicateBasedOnAdditionalBC =  blank
                valid when (ReReplicateOnAnyChange)
                    ReReplicateBasedOnAdditionalBC
                        label is "AdditionalBusinessClass"
        paragraph
            valid when (CanEditBaseFields)
                DataToExtract
                    when value changed
                        refresh DisplayBackfill
                        refresh CanChangeBackfill
            visible when (not ReplicationSet.ExportFormat.COLUMNAR)
                IncludeSourceEntryAction
                    mouse over text is "Selecting_DefaultFor_Current_DataIncludesTheSourceEntryActionFieldInTheReplicationData.ForOtherTypes,TheActionFieldIsNotIncluded.Select_TrueOr_FalseToMakeAnExplicitChoice."
            visible when (DisplayBackfill)
                visible when (CanChangeBackfill)
                    BackfillDate
                        label is "EarliestChangeDateToInclude"
                        when value changed
                            refresh CanMultiThread
            visible when (not CanChangeBackfill)
                BackfillDate
                    label is "BackfillThrough"
                    display only
        paragraph
            valid when (CanMultiThread)
                MultiThreadFullReplications
                    when value changed
                        refresh DisplayBackfill
            valid when (MultiThreadFullReplications)
                MultiThreadNumThreads
                MultiThreadField
                    mouse over text is "PleaseNote:ChoosingAFieldThatIsPartOfThePrimarySetWillGiveTheBestPerformance"
                    select is MultiThreadFieldsList
        single column
            valid when (CanEditBaseFields)
                valid when (not FillConditionRecommended)
                    Condition
                        use text area
            visible when (Delivered)
                valid when (not FillConditionRecommended)
                    AdditionalCondition
                        use text area
            visible when (FillConditionRecommended)
                button of "ChangeCondition"
                    sub form is ConditionForm
            button of "AddFields"
                action is AddFields
