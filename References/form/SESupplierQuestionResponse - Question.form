Question is a Form
    Layout
        paragraph
            SourcingEventSupplierQuestion.QuestionText
                label is number
                display as text
            visible when (SourcingEventSupplierQuestion.CreatedFromQuestionEntered)
                text of "CreatedFromAnswerToQuestion--<CreatedFromThisPreviousQuestionRel.QuestionText>"
                    italics
                    color of blue
        single column
            visible when (SourcingEventQuestionRel.HasAttachment)
                SourcingEventQuestionRel.Attachment.File
                    no label
        single column
            visible when (SourcingEventSupplierQuestion.DisplayAnswerRequiredText)
                single column
                    text of "<ConditionalAnswerLabel>"
                        italics
                        color of red
            SESupplierQuestionAnswer
                label is "<AnswerTextWithRequired>"
        visible when (SourcingEventSupplierQuestion.AllowResponseForEventQuestionAttachment)
            paragraph
                visible when (HasQuestionAnswerAttachment)
                    Attachment.Title
                Attachment.File
                    label is "<SourcingEventQuestionRel.AttachmentTextWithRequired>"
        visible when (SourcingEventSupplierQuestion.AllowResponseAttachment)
            paragraph
                visible when (HasQuestionAnswerAttachment)
                    Attachment.Title
                Attachment.File
                    label is "<SourcingEventQuestionRel.AttachmentTextWithRequired>"
        blank line
