MobileAdvancedSearchForm is a Form
    title is "SearchItem"
    Layout
        paragraph
            ItemNumber
                label is "Item"
            ItemNumber.TextSearch
                label is "ItemDescription"
                show up to 15 characters
            TextSearch
                label is "SpecialItemDescription"
                use text area of 2 lines
            VendorItem
                select is MobileVendorItemSelect
                show up to 10 characters
            Contract.Supplier
                label is "Supplier"
                select is MobileSuppliersSelect
