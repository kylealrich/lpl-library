Processing is a Form
    Layout
        two column distributed
            LineType
            CustomerOrderReturnLine
                label is "LineNumber"
        single column
            paragraph
                Item
                    display as required
                visible when (LineType.Special)
                    Description
                visible when (not LineType.Special)
                    Item.Description
                        no label
                        display as text
                    Item.Description2
                        no label
                        display as text
        two column distributed
            paragraph
                Description
            paragraph
                InventoryLocation
                    label is "Location"
                InventoryLocation.Name
                    no label
                    display as text
        paragraph
            ReasonCode
            ReasonCode.Description
                no label
                display as text
        visible when (not ItemIsCatchWeight)
            paragraph
                Quantity
                SellingUnitOfMeasure
        visible when (false)
            Item.CatchWeightCode
        visible when (ItemIsCatchWeight)
            paragraph
                Quantity
                SellingUnitOfMeasure
                    no label
                    display as text
            visible when (not LineType.Special)
                paragraph
                    InventoryCatchWeightQuantity
                    Item.StockUOM
                        no label
                        display as text
                    visible when (IsCatchWeightQuantityOutOfTolerance)
                        text of "<CatchWeightOutOfToleranceMessage>"
                            bold
                paragraph
                    InvoiceCatchWeightQuantity
                        label is "InvoiceCatchWeightQuantity"
                        display as text
        two column distributed
            paragraph
                EnteredPrice
                    label is "UnitPrice"
                SellingPriceUnitOfMeasure
                    no label
                    display as text
            paragraph
                EnteredUnitCost
                    label is "UnitCost"
                Item.StockUOM
                    no label
                    display as text
        paragraph
            PurchaseOrder
                label is "CustomerP\\ONumber"
            POCode
                label is "CustomerP\\OCode"
            GlobalLineType
        visible when (IsHSNSACCodeEnabled)
            paragraph
                HSNSACCode
                HSNSACCode.Description
                    no label
                    display as text
        header2 of "Disposition"
        two column distributed
            paragraph
                CustomerRequestedAction
                    label is "CustomerRequestedAction"
            paragraph
                CreateCreditMemo
                    label is "CreateCreditMemo"
        two column distributed
            paragraph
                InventoryDisposition
                    label is "InventoryDisposition"
            paragraph
                RestockCharge
                    label is "RestockCharge"
                    compact format
        paragraph
            SalesAccount
                label is "SalesAccount"
                compact format
        paragraph
            OffsetAccount
                label is "OffsetAccount"
                compact format
        paragraph
            CostOfGoodsSoldAccount
                label is "CostOfGoodsAccount"
                compact format
