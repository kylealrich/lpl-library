Billing is a Form
    Layout
        three column distributed
            column1
                paragraph
                    TransientBillingCustomerCode
                        label is "CustomerCode"
                    TransientBillingCustomerCode.Description
                        no label
                        display as text
                paragraph
                    TransientTerritory
                        label is "Territory"
                    TransientTerritory.Description
                        no label
                        display as text
                paragraph
                    TransientPriceList
                        label is "PriceList"
                        compact format
                    TransientPriceList.Description
                        no label
                        display as text
            column2
                paragraph
                    TransientCarrier
                        label is "Carrier"
                    TransientCarrier.VendorName
                        no label
                        display as text
                paragraph
                    TransientBillingFreightCode
                        label is "BillingFreightCode"
                    TransientBillingFreightCode.BillingFreightDescription
                        no label
                        display as text
                paragraph
                    TransientBrokenCaseCharge
                        label is "BrokenCaseCharge"
                    TransientBillingLineItemRequired
                        label is "InvoicingLineItems"
            column3
                paragraph
                    TransientSalesman2
                        label is "SalesRepresentative2"
                    TransientSalesman2.Name
                        no label
                        display as text
                visible when (TransientSalesman2 entered)
                    TransientCommissionSplitPercentage
                        label is "CommissionSplit"
        visible when (BillingCompanyRel.UseIDM)
            header3 of "DocumentDistributionOptions"
            four column table
                column headers
                    "Print"
                    "Email"
                    "From_\\And_\\Reply_\\To_\\Email"
                    "To_\\Email_\\Option"
                row headers
                    "Billing_\\Invoice"
                    "Customer_\\Order"
                column1
                    paragraph
                        PrintBillingInvoice
                            no label
                    paragraph
                        PrintCustomerOrder
                            no label
                column2
                    paragraph
                        EmailBillingInvoice
                            no label
                    paragraph
                        EmailCustomerOrder
                            no label
                column3
                    paragraph
                        visible when (EmailBillingInvoice)
                            BillingInvoiceFromAndReplyToEmail
                                no label
                        visible when (not EmailBillingInvoice)
                            BillingInvoiceFromAndReplyToEmail
                                no label
                                display only
                    paragraph
                        visible when (EmailCustomerOrder)
                            CustomerOrderFromAndReplyToEmail
                                no label
                        visible when (not EmailCustomerOrder)
                            CustomerOrderFromAndReplyToEmail
                                no label
                                display only
                column4
                    paragraph
                        valid when (EmailBillingInvoice)
                            BillingInvoiceEmailOption
                                no label
                    paragraph
                        valid when (EmailCustomerOrder)
                            CustomerOrderEmailOption
                                no label
