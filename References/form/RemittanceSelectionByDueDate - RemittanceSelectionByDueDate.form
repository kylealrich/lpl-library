RemittanceSelectionByDueDate is an ActionForm
    action is RemittanceSelectionByDueDate
    Layout
        paragraph
            DrmCompany
                label is "Company"
                select is ARCompanies
            DrmCompany.Name
                no label
                display as text
        paragraph
            DrmProcessLevel
                label is "ProcessLevel"
                select is ProcessLevels
            DrmProcessLevel.Name
                no label
                display as text
        paragraph
            DrmCashCode
                label is "CashCode"
            DrmCashCode.Description
                no label
                display as text
        paragraph
            BankInstCode
                label is "PaymentCode"
                select is AllBankTransactionCodes
            BankInstCode.Description
                no label
                display as text
        two column distributed
            column1
                DrmRemitType
                    label is "Type"
            column2
                FinancialInstitution
        two column distributed
            column1
                FinancialInstitutionBranch
            column2
                CreditLine
                    select is CreditLines
        header3 of "SelectionCriteria"
        three column distributed
            column1
                FrMaturityDate
                    label is "FromDueDate"
            column2
                ToMaturityDate
                    label is "ToDueDate"
            column3
                UpdateOption
        three column distributed
            column1
                FrDraftDate
                    label is "FromB\\O\\EDate"
            column2
                ToDraftDate
                    label is "ToB\\O\\EDate"
            column3
                MaxAmt
                    label is "MaximumAmount"
        three column distributed
            column1
                FrPostalCode
                    label is "FromPostalCode"
            column2
                ToPostalCode
                    label is "ToPostalCode"
            column3
                PostalOption
        paragraph
            MajClass
                label is "MajorClass"
                select is MajorClass
            MajClass.Description
                no label
                display as text
        paragraph
            MinClass
                label is "MinorClass"
                select is MinorClass
            MinClass.Description
                no label
                display as text
        paragraph
            FrArDraftNbr
                label is "FromB\\O\\E"
            FrSuffix
                no label
            ToArDraftNbr
                label is "ToB\\O\\E"
            ToSuffix
                no label
        three column distributed
            column1
                FrTranAmt
                    label is "FromB\\O\\EAmount"
            column2
                ToTranAmt
                    label is "ToB\\O\\EAmount"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                RemittanceSelectionByDueDateReport_RDG
                RemittanceSelectionByDueDateErrorReport_RDG
            column2 of 25%
                RemittanceSelectionByDueDateReport_XPT
                RemittanceSelectionByDueDateErrorReport_XPT
