Activity is a Form
    Layout
        display as text
            blank line
            three column distributed
                LastPaymentDate
                LastPaymentAmount
                visible when (ReviewCode.Reviewed)
                    ReviewDate
                visible when (ReviewCode.OpenToReview)
                    ReviewDate
            three column distributed
                LastInvoiceDate
                    label is "LatestInvoiceDate"
                LastInvoiceAmount
                    label is "LatestInvoiceAmount"
                visible when (ReviewCode.Reviewed)
                    NextReview
            three column distributed
                LastStatementDate
                    label is "LatestStatementDate"
                LastStatementBalance
                    label is "LatestStatementBalance"
            three column distributed
                visible when (not DunningLetterIndicator)
                    LastDunningLetterDate
                        label is "LatestDunningLetterDate"
                visible when (DunningLetterIndicator)
                    LastLetterDate
                        label is "LatestDunningLetterDate"
                LastDunningLetterAmount
                    label is "LatestDunningLetterAmount"
                visible when (not DunningLetterIndicator)
                    LastDunningLetterNumber
                        label is "LatestDunningLetterNumber"
                visible when (DunningLetterIndicator)
                    LastDunningLetter
                        label is "LatestDunningLetterNumber"
            three column distributed
                DisputedInvoiceAmount
                    label is "DisputeAmount"
                DisputedInvoices
                    label is "Disputes"
            blank line
        paragraph
