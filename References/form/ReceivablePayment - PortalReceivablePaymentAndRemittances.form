PortalReceivablePaymentAndRemittances is a CompositeForm
    title is "Payments"
    disable field options
    called out actions only
    context form is PortalReceivablePaymentContext
        background is theme color
    Actions
        action is refresh
            label is "_"
    Remittances is a Panel
        valid when (TypeOfPayment.CustomerPayment)
        list is ReceivablePaymentRemittance set.PortalReceivablePaymentRemittanceList
