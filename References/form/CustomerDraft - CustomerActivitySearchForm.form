CustomerActivitySearchForm is a SearchForm
    Layout
        two column
            paragraph
                CustomerMajorClass
                    label is "MajorClass"
                CustomerMinorClass
                    label is "MinorClass"
        two column
            paragraph
                DraftNumberRange
                    label is "DraftNumber"
            paragraph
                PostalCodeRange
                    label is "PostalCode"
        two column
            paragraph
                MaturityDateRange.Begin
                    label is "MaturityDate"
                text of "-"
                MaturityDateRange.End
                    no label
            paragraph
                DraftDateRange.Begin
                    label is "DraftDate"
                text of "-"
                DraftDateRange.End
                    no label
        paragraph
            TransactionAmountRange.FromAmount
                label is "TransactionAmount"
            text of "-"
            TransactionAmountRange.ToAmount
                no label
