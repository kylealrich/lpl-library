GeneralLedgerJournalControl is a CompositeForm
    is primary
    propagate as a drill
    title is "JournalControl_<AccountingEntity>_<Ledger>"
    context form is GeneralLedgerJournalControlForm
        background is theme color
    AdditionalInfoPanel is a Panel
        title is "Main"
        form is GeneralLedgerJournalControlAdditionalInfoForm
    CurencyRatesPanel is a Panel
        title is "CurrencyRates"
        visible when (AllowCurrencyRates)
        form is GeneralLedgerJournalControlRatesForm
    CommentsPanel is a Panel
        title is "Comments"
        list is GeneralLedgerJournalComment set.Comment
    TransactionPanel is a Panel
        title is "Transactions"
        list is GeneralLedgerTransaction set.GeneralLedgerJournalTransactionList
    TotalsPanel is a Panel
        title is "Totals"
        form is GeneralLedgerJournalControlTotalsForm
    CurencyTotalsPanel is a Panel
        title is "TotalsByTransactionCurrency"
        visible when (BalanceByTransactionCurrency)
        list is GLCurrencyJournalControl set.GLCurrencyJournalControlList
    RelatedDocumentsPanel is a Panel
        title is "RelatedDocuments"
        list is GeneralLedgerJournalDocument set.GeneraLedgerJournalDocuments
    BudgetErrors is a Panel
        title is "BudgetErrors"
        visible when (BudgetErrorsExist)
        list is BudgetEditErrorRel.BudgetEditErrorList
    SpeedEntryPanel is a Panel
        title is "SpeedTransactionEntry"
        visible when (IsUnreleased)
        list is GeneralLedgerTransaction set.GeneralLedgerSpeeEntryList
    ApprovalInformation is a DashBoardPanel
        visible when (ApprovalCodeApprovalExists)
        show 4 columns
        Progress is a Panel
            triple width
            form is ProcessIndicatorForm
        History is a Panel
            list is GeneralControlApprovalProcessorRel.ApprovalProcessorAuditRel.ApprovalProcessorHistoryCardHistoryCardList
    CloseManagementPanel is a Panel
        title is "CloseManagement"
        list is ClosePeriodTaskByJournalRel.ClosePeriodTaskListByTask
            helper list is ClosePeriodTaskRel.GeneralLedgerJournalControlHelper
                action is CreateClosePeriodTaskJournal
                    invoked.PrmFinanceEnterpriseGroup = FinanceEnterpriseGroup
                    invoked.PrmAccountingEntity = AccountingEntity
                    invoked.PrmGeneralLedgerClosePeriod = GeneralLedgerClosePeriod
                    invoked.PrmGeneralLedgerJournalControl = GeneralLedgerJournalControl
