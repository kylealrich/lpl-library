ReconciliationBalances is a Form
    title is "ReconciliationBalances"
    restrict action Unreconciled.Update
    Layout
        header3 of "ReconciliationBalances"
        two column
            column1
                BeginningBalance
                ReconciledDeposits
                visible when (HasPendingDepositLines)
                    PendingDeposits
                ReconciledPayments
                visible when (HasPendingPaymentLines)
                    PendingPayments
                visible when (HasAnyUnreconciledLines)
                    UnreconciledAmount
                visible when (HasAnyUnpostedDistributions)
                    text of "_"
                visible when (HasPostedDistributionsForPeriod)
                    text of "_"
                visible when (HasVarianceAdjustmentsNotPostedInPeriod)
                    text of "_"
                visible when (HasReconciledTransactionsNotPostedInPeriod)
                    text of "_"
                CalculatedBankBalance
                EndingBalance
                OutOfBalanceAmount
                CurrentCashCodeBalance
            column2
                CalculatedBankBalance
                visible when (not CashManagementAccount.OnlyReconcileToForecast)
                    OutstandingDeposits
                visible when (HasPendingDepositLines)
                    AllPendingDeposits
                visible when (not CashManagementAccount.OnlyReconcileToForecast)
                    OutstandingPayments
                visible when (HasPendingPaymentLines)
                    AllPendingPayments
                visible when (HasAnyUnreconciledLines)
                    AllUnreconciled
                        label is "AllUnreconciledAmount"
                visible when (HasAnyUnpostedDistributions)
                    UnpostedDistribution
                visible when (HasPostedDistributionsForPeriod)
                    PostedDistributionsForPeriod
                        label is "PostedDistributions"
                visible when (HasVarianceAdjustmentsNotPostedInPeriod)
                    VarianceAdjustmentsNotPostedInPeriod
                        label is "VariancesNotPostedInPeriod"
                visible when (HasReconciledTransactionsNotPostedInPeriod)
                    ReconciledTransactionsNotPostedInPeriod
                CalculatedGeneralLedgerBalance
                    label is "CalculatedGlobalLedgerBalance"
                paragraph
                    GeneralLedgerBalance
                        label is "GlobalLedgerBalance"
                    visible when (ReportingBasisNotEntered)
                        text of "*ReportingBasisIsNotDefinedForCashManagementAccount"
                            bold
                            italics
                GeneralLedgerBalanceVariance
                    label is "GlobalLedgerBalanceVariance"
                visible when (HasCashCodeBalancesForPeriod)
                    CashCodeCashPosition
