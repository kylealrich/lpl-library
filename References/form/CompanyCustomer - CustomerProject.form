CustomerProject is a Form
    Layout
        three column
            column1
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Customer
                    Customer.Name
                        no label
                        display as text
                paragraph
                    blank line
                    blank line
            column2
                Company.Currency
                    no label
                    display as text
                Currency
                    no label
                    display as text
                blank line
            column3
                header4 of "CurrentBalances"
                CurrentBalance
                    label is "Current"
                visible when (BOEProcessing)
                    BillOfExchangeBalance
                        label is "BillOfExchange"
                OpenOrderAmount
                    label is "OpenOrder"
