LeasePurge is an ActionForm
    action is LeasePurge
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
            visible when (LeaseCompanyGroup.Lease)
                paragraph
                    Company
                        select is PayablesCompanyList
                    Company.Name
                        no label
                        display as text
                paragraph
                    Lease
                        select is AllLeases
                    Lease.Description
                        no label
                        display as text
            visible when (LeaseCompanyGroup.CompanyGroup)
                paragraph
                    CompanyGroup
                        label is "CompanyGroup"
                        select is CompanyGroupsInFinanceEnterpriseGroup
                    CompanyGroup.Description
                        no label
                        display as text
        paragraph
            Status
                label is "LeaseStatus"
            Archive
        paragraph
            Selection
                label is "PurgeSelection"
            Update
        header2 of "SelectFiles"
        paragraph
            Invoices
            InvoiceDate
                label is "ThroughDueDate"
        blank line
        paragraph
            Schedules
                label is "PaymentSchedules"
            ScheduleDate
                label is "ThroughDueDate"
        blank line
        paragraph
            Balances
            BalanceYear
                label is "ThroughEnd_ofFiscalYear"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                LeasePurgeReport_RDG
            column2 of 25%
                LeasePurgeReport_XPT
