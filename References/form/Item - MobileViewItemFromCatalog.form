MobileViewItemFromCatalog is a Form
    title is "Item_<Item>"
    called out actions only
    restrict action Delete
    Actions
        action is Delete
            hide when invalid
    Layout
        single column
            visible when (UseLinkedImage)
                ImageURL
                    display as image
            visible when (not UseLinkedImage)
                Picture.File
                    no label
                    display as full image up to 3 lines
                        missing image is random background
                            foreground text is "<ItemDescriptionAbbreviation>"
        display as text
            two column table
                column1
                    Item
                column2
                    Description
            single column
                paragraph
                    visible when (Description2 entered)
                        Description2
                    StockUOM
                        display as text
                visible when (Description3 entered)
                    Description3
                        label is "LongDescription"
                        use text area of 3 lines
                RecallNoticesDisplay
                    no label
                    display as tag
                        color of red when (RecallNoticesExist)
        display as text
            two column table
                column1
                    KeywordShadowRel.DisplayItemAvailableSOH
                        label is "Stock_onHand"
                    visible when (Reference1 entered)
                        Reference1
                column2
                    KeywordShadowRel.DefaultItemType
                        label is "ItemType"
                    visible when (Reference2 entered)
                        Reference2
            paragraph
                visible when (Manufacturer.ManufacturerCode entered)
                    Manufacturer.ManufacturerCode
                    Manufacturer.Description
                        label is "Name"
                    Manufacturer.ManufacturerDivision
                        label is "Division"
                visible when (ManufacturerNumber entered)
                    ManufacturerNumber
                        label is "Number"
            paragraph
                visible when (KeywordShadowRel.HasContract)
                    KeywordShadowRel.ContractRel.Contract
                        label is "Contract"
            single column
                visible when (GenericName entered)
                    GenericName
