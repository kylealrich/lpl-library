MProcurementCardStatementTransactionCommentForm is a Form
    propagate as a drill
    title is "ProcurementCardTransactionComment<Title>forTransaction<ProcurementCardStatementTransaction.TransactionNumber>"
    restrict action Delete
    restrict action Create
    Actions
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        header3 of "StatementTransactionInformation"
        display as text
            two column distributed
                ProcurementGroup
                    label is "ProcurementGroup"
                ProcurementGroup.Description
                    no label
            two column distributed
                ProcurementCardStatementTransaction.Company
                ProcurementCardStatementTransaction.Company.Name
                    label is "CompanyName"
            two column distributed
                ProcurementCardProgram
                    label is "ProgramName"
                ProcurementCardProgram.Description
            two column distributed
                ProcurementCardStatement
                    label is "Statement"
                ProcurementCardStatementTransaction.TransactionNumber
            two column distributed
                ProcurementCardStatementTransaction.ProcurementCardNumber.DisplayProcurementCardNumber
                    label is "CardNumber"
                ProcurementCardStatementTransaction.CardUserName
                    no label
            two column distributed
                ProcurementCardStatement.ShipToPostalCode
                ProcurementCardStatement.ShipFromPostalCode
            two column distributed
                ProcurementCardStatement.VatReferenceNumber
                    label is "V\\A\\TReferenceNumber"
                ProcurementCardStatement.VatTaxRate
                    label is "V\\A\\TTaxRate"
            two column distributed
                ProcurementCardStatement.VatTaxAmount
                    label is "V\\A\\TTaxAmount"
                ProcurementCardStatementTransaction.TransactionDate
            two column distributed
                ProcurementCardStatementTransaction.Merchant
                ProcurementCardStatementTransaction.Merchant.Name
                    label is "MerchantName"
            two column distributed
                ProcurementCardStatement.DestinationCountryCode
                ProcurementCardStatementTransaction.UnitCost
        header3 of "Comment"
        single column
            Title
            CommentText
                use text area of 12 lines
        paragraph
            Attachment.File
            Attachment.Title
            visible when (false)
                Attachment.MimeType
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
