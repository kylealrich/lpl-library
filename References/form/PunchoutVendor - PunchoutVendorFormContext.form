PunchoutVendorFormContext is a Form
    Layout
        visible when (DerivedPunchoutVendorLogo entered)
            four column distributed
                column1
                    DerivedPunchoutVendorLogo
                        display as portrait image
                            missing image is random background
                                foreground text is "<Vendor.XiVendorNameAbbreviation>"
                column2
                    paragraph
                        VendorGroup
                            show up to 10 characters
                        VendorGroup.Description
                            no label
                            display as text
                    paragraph
                        PunchoutVendor
                column3
                    paragraph
                        Vendor
                        Vendor.VendorName
                            no label
                            display as text
                    paragraph
                        PunchoutVendorName
                            label is "VendorName"
                            show up to 10 characters
                column4
                    PurchaseFromLocation
                        show up to 10 characters
                    paragraph
                        PunchoutVendorCategory
                            label is "VendorCategory"
                            show up to 10 characters
                        PunchoutVendorCategory.Description
                            no label
                            display as text
        visible when (DerivedPunchoutVendorLogo not entered)
            three column distributed
                column1
                    paragraph
                        VendorGroup
                            show up to 10 characters
                        VendorGroup.Description
                            no label
                            display as text
                    PunchoutVendor
                column2
                    paragraph
                        Vendor
                        Vendor.VendorName
                            no label
                            display as text
                    paragraph
                        PunchoutVendorName
                            label is "VendorName"
                column3
                    PurchaseFromLocation
                        show up to 10 characters
                    paragraph
                        PunchoutVendorCategory
                            label is "VendorCategory"
                            show up to 10 characters
                        PunchoutVendorCategory.Description
                            no label
                            display as text
