AssetRepairRelease is an ActionForm
    action is AssetRepairRelease
    title is "AssetRepairInterface"
    Layout
        header2 of "SelectionOptions"
        paragraph
            Source
            Release
                label is "Update"
        paragraph
            Company
                select is Companies
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
        paragraph
            VendorGroup
            Vendor
            Invoice
                label is "RepairRecord"
                select is ImportedRepairInvoices
        paragraph
            Activity
                label is "AssetProject"
            paragraph
                Asset
                    select is AllAssets
                Asset.Description
                    no label
                    display as text
        paragraph
            TagNbr
                label is "Tag"
                select is Tags
            AssetGroup
                select is AssetGroups
        header2 of "OutputOptions"
        header3 of "PrintTotals"
        single column
            header4 of "Sequence"
            blank line
            paragraph
                LocOption
                    label is "Location"
                DivOption
                    label is "Division"
            paragraph
                TypeOption
                    label is "Type\\,Sub"
                AstgrpOption
                    label is "AssetGroup"
            paragraph
                AssetOption
                    label is "Asset"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AssetRepairReleaseReport_RDG
            column2 of 25%
                AssetRepairReleaseReport_XPT
