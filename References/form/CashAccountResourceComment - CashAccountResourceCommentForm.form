CashAccountResourceCommentForm is a Form
    is primary
    title is "ResourceComment"
    Layout
        display as text
            two column distributed
                column1
                    CashManagementAccount
                    CashManagementAccountResource.FinanceResource.SearchName
                        label is "Resource"
                column2
                    CashManagementAccount.Title
                        label is "AccountTitle"
                    blank line
        single column
            blank line
        single column
            Title
            Comment
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
