ChargeImportMaintenanceContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not ProcurementGroupExists)
                        ProcurementGroup
                        ProcurementGroup.Description
                            no label
                            display as text
                    visible when (ProcurementGroupExists)
                        ProcurementGroup.DerivedProcurementGroupName
                            label is "ProcurementGroup"
                            display as text
                paragraph
                    visible when (not ProcurementCardExists)
                        ProcurementCardProgram
                            label is "Program"
                        ProcurementCardProgram.Description
                            no label
                            display as text
                    visible when (ProcurementCardExists)
                        ProcurementCardProgram.DerivedCardProgramName
                            label is "Program"
                            display as text
            column2
                paragraph
                    visible when (not ProcurementCardStatementExists)
                        ProcurementCardStatementImport
                            label is "Statement"
                    visible when (ProcurementCardStatementExists)
                        ProcurementCardStatementImport
                            label is "Statement"
                            display as text
                paragraph
                    visible when (not CompanyExists)
                        Company
                        Company.Name
                            no label
                            display as text
                    visible when (CompanyExists)
                        Company.DerivedCompanyIDName
                            label is "Company"
                            display as text
            column3
                StatementFromDate
                    label is "StatementFrom"
                StatementToDate
                    label is "StatementTo"
                blank line
