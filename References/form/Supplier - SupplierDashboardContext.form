SupplierDashboardContext is a Form
    Actions
        navigation is ViewSupplier
            label is "UpdateSupplier"
    Layout
        three column distributed
            display as text
                column1
                    RepresentativeText
                column2
                    MailingAddress.Municipality
                        label is "City"
                    visible when (VATEntered)
                        VATRegistrationNumber
                    visible when (IsVendor)
                        Vendor
                            label is "VendorID"
                column3
                    MailingAddress.StateProvince
                        label is "State"
                    SupplierStatus
                        label is "Status"
                        display as tag
                            color of yellow when (SupplierStatus.NeedsValidation)
                            color of yellow when (SupplierStatus.PendingValidation)
                            color of green when (SupplierStatus.Validated)
                            color of red when (SupplierStatus.Rejected)
