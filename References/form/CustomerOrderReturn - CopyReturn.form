CopyReturn is an ActionForm
    action is Entered.CopyReturn
        on completion navigate to ViewOrderReturn
    Layout
        paragraph
            PrmBillingCompany
                label is "Company"
            PrmBillingCompany
                no label
                display as text
        paragraph
            visible when (PrmBillingCompany.ManualReturnNumbering)
                PrmCustomerOrderReturn
        paragraph
            PrmBillingInvoice
                label is "OriginalInvoice"
                compact format
        paragraph
            PrmCustomerOrder
                label is "OriginalOrder"
        paragraph
            PrmShipment
                label is "Shipment"
        paragraph
            PrmInvoiceType
                label is "InvoiceType"
            PrmInvoiceType.Description
                no label
                display as text
        single column
            PrmCreateCreditMemo
                label is "CreateCreditMemo"
            PrmReasonCode
                label is "CreditMemoReasonCode"
            PrmCopyAddOnCharge
                label is "CopyAddOnCharge"
            PrmCopyFreightCharge
                label is "CopyFreightCharge"
            PrmInventoryDisposition
                label is "InventoryDisposition"
