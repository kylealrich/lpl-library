ProcessingCountsForm is a Form
    Layout
        display as text
            header3 of "ProcessingCounts"
            visible when (HasTransactionsCreated)
                three column distributed
                    column1
                        paragraph
                            BillingInterfaceCounts.TotalBillingInvoiceCount
                                label is "TransactionsProcessed"
                        paragraph
                            BillingInterfaceCounts.LineCount
                                label is "InvoiceLinesProcessed"
                    column2
                        paragraph
                            InvoiceSuccessfulCount
                                label is "Successful"
                        paragraph
                            BillingInterfaceCounts.AOCCount
                                label is "AddOnChargesProcessed"
                    column3
                        paragraph
                            InvoiceErrorCount
                                label is "Errors"
                        paragraph
                            BillingInterfaceCounts.CommentsCount
                                label is "CommentsProcessed"
            visible when (not HasTransactionsCreated)
                three column distributed
                    column1
                        paragraph
                            BillingInterfaceCounts.TotalBillingInvoiceCount
                                label is "TransactionsProcessed"
                    column2
                        paragraph
                            InvoiceSuccessfulCount
                                label is "Successful"
                    column3
                        paragraph
                            InvoiceErrorCount
                                label is "Errors"
