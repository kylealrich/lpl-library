ProviderForm is a Form
    is primary
    title is "Provider"
    Layout
        visible when (ProviderExists)
            paragraph
                ItemGroup.ItemGroupDescription
                    label is "ItemGroup"
                    display as text
            paragraph
                Provider
                    display as text
        visible when (not ProviderExists)
            paragraph
                ItemGroup
                    select is ItemGroupValidForPreferenceCardList
                ItemGroup.Description
                    no label
                    display as text
            paragraph
                Provider
        paragraph
            Name.FamilyName
                label is "LastName"
            Name.GivenName
                label is "FirstName"
            Name.MiddleName
                label is "MiddleInitial"
        paragraph
            Active
