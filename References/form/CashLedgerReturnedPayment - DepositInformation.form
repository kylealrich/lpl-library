DepositInformation is a Form
    Layout
        paragraph
            OriginalDepositBankTransactionCode
                label is "DepositTransactionCode"
                select is BankServices
            OriginalDepositBankTransactionCode.Description
                no label
                display as text
        paragraph
            DepositType
        three column
            column1
                DepositNumber
                    label is "DepositNumber"
            column2
                visible when (Status.Unreleased)
                    text of "Or"
            column3
                visible when (Status.Unreleased)
                    paragraph
                        CashLedgerTransactionId
                            label is "SelectCashLedgerTransaction"
                            select is ReturnedPaymentCashLedgerTransactions
                        CashLedgerTransactionId.TransactionNumber
                            no label
                            display as text
                        CashLedgerTransactionId.IssueDate
                            no label
                            display as text
                        CashLedgerTransactionId.Description
                            no label
                            display as text
        three column
            column1
                ElectronicFundsTransferNumber
                    label is "EFT_Reference"
            column2
                visible when (Status.Unreleased)
                    text of "Or"
            column3
                visible when (Status.Unreleased)
                    paragraph
                        ElectronicFundTransactionId
                            label is "SelectEFTReference"
                            compact format
                            select is ReturnedPaymentElectronicFundsTransactions
                        ElectronicFundTransactionId.Reference
                            no label
                            display as text
                        ElectronicFundTransactionId.TransactionDate
                            no label
                            display as text
                        ElectronicFundTransactionId.Description
                            no label
                            display as text
        blank line
        paragraph
            BankAccountDepositAmount
                label is "DepositAmount"
                display as text
        paragraph
            DepositDate
                label is "Date"
                display as text
