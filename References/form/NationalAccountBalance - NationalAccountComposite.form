NationalAccountComposite is a CompositeForm
    is primary
    title is "NationalAccount"
    context form is NationalAccountContext
        background is theme color
    Actions
        action is AddCustomer
            action icon is apply
            mouse over text is "Add_\\Customer_\\To_\\Highlighted_\\National_\\Account_\\Parent"
            hide when invalid
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is Create
            label is "_"
            mouse over text is "Create_\\New_\\National_\\Account_\\Or_\\Add_\\To_\\Existing"
        action is open
            label is "_"
        action is Delete
            label is "_"
            mouse over text is "Delete_\\Highlighted_\\National_\\Account_\\Parent_\\And_\\Its_\\Children"
        action is search
            label is "_"
        action is refresh
            label is "_"
    InvoicedCustomers is a Panel
        visible when (IsNationalAccountBalance)
        list is NationalAccountRel.NationalAccountSpeedEntry
    InvoicedCustomer is a Panel
        visible when (not IsNationalAccountBalance)
        form is InvoicedCustomer
