ReplicationSetContext is a Form
    title is "ReplicationSet"
    Layout
        paragraph
            ReplicationSet
            visible when (ShowLastRefreshStamp)
                LastRefreshStamp
                    display as text
            visible when (ShowNoLastRefreshStampMessage)
                NoLastRefreshStampMessage
                    no label
                    display as tag
                        color of orange
            visible when (InProcess)
                InProcessMessage
                    no label
                    display as tag
                        color of green
        three column
            column1 of 15%
                header4 of "Export"
                ExportFormat
            column2 of 25%
                visible when (RegisterSchemasAllowed)
                    header4 of "SchemaDestination"
                    ReplicationSchemaDestination
                        no label
            column3 of 60%
                visible when (not ExportFormat.COLUMNAR)
                    header4 of "DataDestination"
                    ReplicationDataDestination
                        no label
                visible when (ReplicationDataDestination.Local)
                    LocalDestination
                visible when (SchemaRegistrationRequired)
                    text of "AllSchemasHaveNotBeenRegisteredOrTheReplicationSetStructureHasChangedSinceLastRegistration"
                        color of red
