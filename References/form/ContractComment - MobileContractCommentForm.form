MobileContractCommentForm is a Form
    title is "ContractComment"
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            paragraph distributed
                Contract
                Contract.Supplier.SupplierName
                    label is "Supplier"
        single column
            ContractCommentType
                label is "CommentType"
                display as text
            CommentUsedFor
            CommentTitle
                label is "Title"
            Description
                use text area of 8 lines
            visible when (EligibleForSourcing)
                SSComment
                    label is "SendCommentToSourcing"
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            EmailAttachment
                label is "IncludeAttachmentInEmail"
            visible when (CommentExists)
                SupplierCanView
