LeaseAmortization is an ActionForm
    action is LeaseAmortization
    Layout
        single column
            paragraph
                PrmCompany
                    label is "Company"
                    select is PayablesCompanyList
                PrmCompany.Name
                    no label
                    display as text
            paragraph
                PrmLease
                    label is "Lease"
                    select is AllLeases
                PrmLease.Description
                    no label
                    display as text
        paragraph
            PrmLeaseClass
                label is "LeaseClassification"
            PrmLeaseType
                label is "LeaseType"
                select is LeaseTypes
            PrmLeaseType.Description
                no label
                display as text
        blank line
        paragraph
            PrmCurrency
                label is "Currency"
