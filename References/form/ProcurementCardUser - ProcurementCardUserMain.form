        visible when (not ProcurementCardUserExists)
            two column distributed
                paragraph
                    HROrganization
                    HROrganization.Name
                        no label
                        display as text
                paragraph
                    ProcurementCardUser
                    ProcurementCardUser.Employee.PresentationNameSnapshot
                        no label
                        display as text
        two column distributed
            paragraph
                ProcurementGroup
                    label is "ProcurementGroup"
