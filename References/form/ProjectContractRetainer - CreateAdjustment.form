CreateAdjustment is an ActionForm
    action is CreateAdjustment
    title is "CreateAdjustment"
    Layout
        single column
            AdjustmentAmount
            PrmDescription
            PrmRetainerDate
            PrmTermsCode
            visible when (not ProjectContract.UseIDM)
                paragraph
                    PrmProjectInvoiceFormat
                        label is "InvoiceFormat"
                    button of "ViewInvoiceFormat"
                        view PrmProjectInvoiceFormat.ProjectContractInvoiceTemplate.File
            visible when (ProjectContract.UseIDM)
                paragraph
                    PrmProjectContractInvoiceTemplate
                        select is ProjectContractInvoiceIDMTemplate
                    button of "ViewInvoiceFormat"
                        link is external "<PrmProjectContractInvoiceTemplate.RetrieveUrl>"
