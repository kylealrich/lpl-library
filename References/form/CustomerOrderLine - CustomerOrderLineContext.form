CustomerOrderLineContext is a Form
    restrict action CreateCustomerOrderReturnLine
    Layout
        three column distributed
            display as text
                column1
                    CustomerOrder.Company.RepresentativeText
                        label is "Company"
                    CustomerOrder.InventoryLocation.RepresentativeText
                        label is "Location"
                    CustomerOrder.Customer.RepresentativeText
                        label is "Customer"
                column2
                    CustomerOrder
                        label is "Order"
                    visible when (CustomerOrder.CurrencyEntered)
                        CustomerOrder.Currency.CurrencyDescriptionID
                            label is "Currency"
                    visible when (not CustomerOrder.CurrencyEntered)
                        CustomerOrder.Currency
                            label is "Currency"
                    EarlyDeliveryDate
                        label is "RequestedDate"
                column3
                    CustomerOrder.Status
                        display as tag
                            color of yellow when (CustomerOrder.Status.Unreleased)
                            color of green when (CustomerOrder.Status.Released)
                            color of red when (CustomerOrder.Status.Canceled)
                            color of gray when (CustomerOrder.Status.ReadyForPurge)
                    visible when (IsHoldCode)
                        HoldCodeMessage
                            no label
                            display as tag
                                color of red
                    visible when (IsHoldCodeWithoutPO)
                        HoldCodeWithoutPOMessage
                            no label
                    visible when (IsNationalHoldCodeWithPO)
                        NationalHoldCodeWithPOMessage
                            no label
                    visible when (IsNationalHoldCode)
                        NationalHoldCodeMessage
                            no label
                    visible when (IsCustomerGroupHoldCodeWithPO)
                        CustomerGroupHoldCodeWithPOMessage
                            no label
                    visible when (IsCustomerGroupHoldCode)
                        CustomerGroupHoldCodeMessage
                            no label
                    ExpectedShipDate
                        label is "ExpectedShipDate"
