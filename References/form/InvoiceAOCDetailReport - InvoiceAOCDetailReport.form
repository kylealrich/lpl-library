InvoiceAOCDetailReport is an ActionForm
    action is InvoiceAOCDetailReport
    Layout
        two column
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            CompanyGroup
                label is "_orCompanyGroup"
        blank line
        three column
            VendorGroup
            Vendor
                select is VendorsByName
            Vendor.VendorName
                no label
                display as text
        two column
            LocationCode
                label is "PurchaseFromLocation"
                select is APPurchaseFromLocations
            LocationCode.VendorName
                no label
                display as text
        blank line
        two column
            FrInvoiceDate
                label is "FromInvoiceDate"
            ToInvoiceDate
                label is "ToInvoiceDate"
        two column
            FrPostingDate
                label is "-or\\-FromPaymentDate"
            ToPostingDate
                label is "ToPaymentDate"
        blank line
        three column
            AocCode.AocCode[1]
                label is "A\\O\\CCode"
            AocCode.AocCode[2]
                no label
            AocCode.AocCode[3]
                no label
        three column
            AocCode.AocCode[4]
                no label
            AocCode.AocCode[5]
                no label
            AocCode.AocCode[6]
                no label
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InvoiceAOCDetailReportReport_RDG
                ErrorRpt_RDG
            column2 of 25%
                InvoiceAOCDetailReportReport_XPT
                ErrorRpt_XPT
