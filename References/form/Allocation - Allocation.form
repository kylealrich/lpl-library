Allocation is a CompositeForm
    is primary
    title is "<DerivedCompositeFormTitle>"
    context form is Header
        background is theme color
    Actions
        action is Run
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Lines is a Panel
        list is AllocationLine set.Lines
    DefaultStructures is a Panel
        visible when (AllocationControl.Type.Actuals)
        form is Structures
    BudgetDefaultStructures is a Panel
        title is "DefaultStructure"
        visible when (AllocationControl.Type.Budget)
        form is BudgetStructures
    JournalizeLog is a Panel
        title is "JournalizeLogs"
        visible when (AllocationControl.Type.Actuals)
        list is AllocationJournalizeLog set.JournalizeLog
