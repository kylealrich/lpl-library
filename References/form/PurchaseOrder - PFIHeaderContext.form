PFIHeaderContext is a Form
    Layout
        display as text
            visible when (not SmartphoneDisplay)
                four column distributed
                    column1
                        Company.RepresentativeText
                            label is "Company"
                        Buyer.Employee.Name.PreferredFirstAndLastName
                            label is "Buyer"
                    column2
                        paragraph
                            DisplayRelevantPurchaseOrderAndRevision
                                label is "PurchaseOrder"
                            PurchaseOrderDate
                                label is "Date"
                        Vendor.RepresentativeText
                    column3
                        visible when (HasDefaultDeliveryDate)
                            DefaultDeliveryDate
                                label is "DeliveryDate"
                        visible when (HasPurchaseFromLocation)
                            PurchaseFromLocation.RepresentativeText
                                label is "PurchaseFrom"
                    column4
                        paragraph
                            CalculateTotalAmount
                                label is "Total"
                            Currency
                                no label
                        DerivedShipToLocationRepresentativeText
            visible when (SmartphoneDisplay)
                two column table
                    column1
                        Company.RepresentativeText
                            label is "Company"
                        DisplayRelevantPurchaseOrderAndRevision
                            label is "PurchaseOrder"
                        PurchaseOrderDate
                        visible when (HasPurchaseFromLocation)
                            PurchaseFromLocation.RepresentativeText
                                label is "PurchaseFrom"
                        paragraph
                            CalculateTotalAmount
                                label is "Total"
                            Currency
                                no label
                    column2
                        Buyer.RepresentativeText
                        Vendor.RepresentativeText
                        visible when (HasDefaultDeliveryDate)
                            DefaultDeliveryDate
                                label is "DeliveryDate"
                        DerivedShipToLocationRepresentativeText
