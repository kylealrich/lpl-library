PhonePurchaseOrderSpreadAddOnCharge is a Form
    title is "SpreadAddOnCharge"
    Layout
        header2 of "SpreadAddOnChargeInformation"
        display as text
            single column
                PurchaseOrder.DisplayDocumentNumber
                AddOnCharge
                    label is "SpreadAddOnCharge"
                    select is AddOnChargesWithSpreadList
                AddOnCharge.Description
                    label is "Description"
                SpreadMethod
                CalculatedSpreadAmount
                    label is "SpreadAmount"
