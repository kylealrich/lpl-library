RSSLPLProcurementTemplateLineMain is a Form
    Layout
        visible when (false)
            DefaultUnitCost
        header2 of "_"
        display as text
            header2 of "Cost"
            three column distributed
                column1
                    RSSLPLDerivedUnitCostCurrencyCode
                        label is "UnitCost"
                column2
                    CostCode
                        label is "CostCode"
                column3
                    CostOption
                        label is "CostOption"
            header2 of "Contract"
            three column distributed
                column1
                    RSSLPLDerivedContractID
                        label is "Contract"
                    RSSLPLDerivedContractLineActive
                        label is "ContractLineActive?"
                column2
                    RSSLPLDerivedContractLine
                        label is "ContractLine"
                    RSSLPLDerivedPreferredLine
                        label is "PreferredLine"
                column3
                    RSSLPLDerivedPriority
                        label is "ContractPriority"
            header2 of "Manufacturer"
            three column distributed
                column1
                    DerivedManufacturerCode
                        label is "ManufacturerCode"
                    DerivedManufacturerDivision
                        label is "ManufacturerDivision"
                column2
                    DerivedManufacturerNumber
                        label is "ManufacturerNumber"
                    DerivedItemGTIN
                        label is "GTIN"
                column3
                    DerivedManufacturerDescription
                        label is "ManufacturerDescription"
            header2 of "Vendor"
            three column distributed
                column1
                    RSSLPLDerivedVendorAndVendorName
                        label is "Vendor"
                column2
                    RSSLPLDerivedPurchaseFromLocationAndVendorName
                        label is "PurchaseFromLocation"
                column3
                    paragraph
                        DerivedVendorItem
                            label is "VendorItem"
                        DerivedVendorItemDescription
                            no label
        display as text
            header2 of "Other"
            three column distributed
                column1
                    Item.Latex
                        label is "LatexItem"
                    ServiceCode
                        label is "ServiceCode"
                    IsKitItem
                        label is "KitItem"
                column2
                    visible when (DisplayPurchaseClasses)
                        paragraph
                            DerivedMajorPurchasingClass
                                label is "MajorPurchasingClass"
                    visible when (DisplayPurchaseClasses)
                        paragraph
                            DerivedMinorPurchasingClass
                                label is "MinorPurchasingClass"
                    Item.Recipe
                        label is "Recipe"
                column3
                    DerivedCreatePurchaseOrder
                        label is "CreatePurchaseOrder"
                    DerivedUOM
                        label is "BuyUOM"
                    visible when (DefaultItemType.Inventoried)
                        DerivedItemAvailableSOH
                            label is "AvailableSOH"
            visible when (HasSpecialHandlingCode)
                header2 of "HandlingInformation"
                three column distributed
                    column1
                        DerivedSpecialHandlingCode
                            label is "SpecialHandlingCode"
                        DerivedSpecialHandlingInstructions
                            label is "SpecialHandlingCodeInstructions"
                            use text area of 7 lines
                    column2
                        DerivedTimeSensitive
                            label is "TimeSensitive"
                    column3
                        DerivedHandlingTimeInMinutes
                            label is "HandlingTimeInMinutes"
