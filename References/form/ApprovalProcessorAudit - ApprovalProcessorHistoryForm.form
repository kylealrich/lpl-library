ApprovalProcessorHistoryForm is a Form
    is primary
    title is "ApprovalHistory"
    Layout
        header2 of "ApprovalHistoryInformation"
        visible when (ResourceEntered)
            visible when (FinanceResourceExists)
                paragraph
                    FinanceResourceRel.PreferredSimplePresentationName
                        label is "Resource"
                        display as text
                    button of "<FinanceResourceRel.EmailAddress>"
                        visible when (EmailAddressEntered)
                        link is "mailto:<FinanceResourceRel.EmailAddress>"
                        display as link
                    FinanceResourceRel.FullWorkPhone
                        no label
                        display as text
            visible when (not FinanceResourceExists)
                paragraph
                    Resource.PresentationNameSnapshot
                        label is "Resource"
                        display as text
                    button of "<Resource.EmployeeWorkEmailAddress>"
                        visible when (EmailAddressEntered)
                        link is "mailto:<Resource.EmployeeWorkEmailAddress>"
                        display as link
                    Resource.EmployeeWorkTelephone
                        no label
                        display as text
        visible when (not ResourceEntered)
            single column
                DerivedResourceTeamDisplay
                    label is "Team/Role"
                    display as text
        display as text
            single column
                UpdateDate
                Status
                ActionReason
                Comment
                    use text area of 4 lines
                Escalated
