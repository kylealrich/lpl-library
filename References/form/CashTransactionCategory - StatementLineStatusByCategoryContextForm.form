StatementLineStatusByCategoryContextForm is a Form
    title is "StatementLinesByCategory"
    Layout
        three column distributed
            paragraph
                BankStatement
                    label is "StatementNumber"
                    display as text
                BankStatement.StatementDate
                    display as text
            paragraph
                CashManagementAccount
                    display as text
                CashManagementAccount.Title
                    display as text
            paragraph
                CashTransactionCategory
                    display as text
                Description
                    display as text
        three column distributed
            column1
                paragraph
                    ReconciledLinesAmountByCategory
                        label is "ReconciledAmount"
                        display as text
                    NumReconciledLinesByCategory
                        label is "Lines"
                        display as text
            column2
                paragraph
                    UnreconciledLinesAmountByCategory
                        label is "UnreconciledAmount"
                        display as text
                    NumUnreconciledLinesByCategory
                        label is "Lines"
                        display as text
