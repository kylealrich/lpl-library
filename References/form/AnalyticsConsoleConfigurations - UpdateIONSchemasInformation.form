UpdateIONSchemasInformation is a Form
    title is "UpdateIONSchemas"
    disable all actions
    Layout
        button of "StartIONSchemasUpdate"
            valid when (AnalyticsConsoleConfigurationsRel.IsWorkflowNotInProcess)
            action is StartIONSchemasUpdate
        single column
            visible when (last PostPfiWorkunitsRel.Status.Processing)
                text of "There_is_an_ongoing_process_for_Update_ION_Schemas."
                    bold
                    color of red
            visible when (last DataFlowToAnalyticsFLRel.Status.Processing)
                text of "There_is_an_ongoing_process_for_Data_Flow_To_Analytics_Full_Load."
                    bold
                    color of red
            visible when (last DataFlowToAnalyticsILRel.Status.Processing)
                text of "There_is_an_ongoing_process_for_Data_Flow_To_Analytics_Incremental_Load."
                    bold
                    color of red
        button of "ScheduleIONSchemasUpdate"
            action is ScheduleIONSchemasUpdate
        single column
            last PostPfiWorkunitsRel.ExecutionStartDate
                label is "LastUpdate"
            last PostPfiWorkunitsRel.Status
                label is "Status"
                raise red alert when (last PostPfiWorkunitsRel.IsFailed)
                raise yellow alert when (last PostPfiWorkunitsRel.IsCanceled)
                raise blue alert when (last PostPfiWorkunitsRel.IsActionPendingOrActionPendingInServer)
                    mouse over text is "ActionPending"
            button of "<last PostPfiWorkunitsRel.PfiWorkunit>"
                valid when (AnalyticsConsoleConfigurationsRel.IsUpdateIONSchemasWorkunitExists)
                link is UpdateIONSchemasWorkUnitNav
                label is "WorkUnit"
                display as link
