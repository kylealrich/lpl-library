LineSourceForm is a Form
    is primary
    title is "LineSource"
    Layout
        display as text
            four column
                SourcingEvent.RepresentativeText
                SourcingEventLine
                    label is "Line"
                SourcingEventLineSource
                    label is "LineSource"
                OriginCode
            header2 of "Details"
            four column
                OperatingCompany
                    label is "Company"
                SourceDocumentNumeric
                    label is "Document"
                RequestingLocation
                    label is "RequestingLocation"
                RequisitionHeaderRel.Requester.Employee.FirstLastName
            four column
                LineNumber
                    label is "Line"
                ShipTo
                Quantity
                POCode
            single column
                visible when (ContractManagement)
                    ContractLineRel.UOM
                        label is "UOM"
                visible when (Requisitions)
                    RequisitionLineRel.EnteredUOM
                        label is "UOM"
                visible when (Sourcing)
                    SourcingEventLine.UOM.UnitOfMeasure
                        label is "UOM"
