ReconciliationPeriodDetailContextForm is a Form
    Layout
        two column distributed
            column1
                paragraph
                    ReconciliationAccountStructure
                    ReconciliationAccountStructure.Description
                        no label
                        display as text
                visible when (ReconciliationAccount.LevelType.Group)
                    paragraph
                        ReconciliationAccount.ReconciliationGroup
                            display only
                visible when (ReconciliationAccount.LevelType.NonAccount)
                    paragraph
                        ReconciliationAccount.NonAccountReconciliation
                            display only
                visible when (ReconciliationAccount.IsAccountWithinGroup)
                    paragraph
                        ReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
                            display only
                visible when (ReconciliationAccount.LevelType.Account)
                    paragraph
                        ReconciliationAccount.ReconciliationCodeBlock
                            display only
                        ReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                            no label
                            display as text
            column2
                visible when (ReconciliationAccount.LevelType.Account)
                    first PeriodEndReconciliationRel.LedgerAmount
                        display as text
                visible when (ReconciliationAccount.LevelType.NonAccount)
                    first PeriodEndReconciliationRel.NonAccountBalance
                        display as text
                visible when (ReconciliationAccount.LevelType.Group)
                    first PeriodEndReconciliationRel.GroupLedgerAmount
                        label is "LedgerAmount"
                        display as text
                first PeriodEndReconciliationRel.ReconcilingAmount
                    display as text
                visible when (first PeriodEndReconciliationRel.HasUnpostedPeriodEndDistributions)
                    first PeriodEndReconciliationRel.UnpostedDistributionAmount
                        display as text
                visible when (ReconciliationAccount.ReconciliationAccountType.Cash)
                    first PeriodEndReconciliationRel.OpenBankTransactionsAmount
                        display as text
                    visible when (first PeriodEndReconciliationRel.HasUnpostedBankStatementDistributions)
                        first PeriodEndReconciliationRel.UnpostedBankStatementDistributionsAmount
                            display as text
                first PeriodEndReconciliationRel.DetailAmount
                    label is "<DerivedDetailAmountLabel>"
                    display as text
                first PeriodEndReconciliationRel.OutOfBalance
                    display as text
                    raise yellow alert when (PeriodEndReconciliationRel.IsOutOfBalance)
                        mouse over text is "ReconciliationIsOutOfBalance"
