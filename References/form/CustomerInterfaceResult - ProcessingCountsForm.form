ProcessingCountsForm is a Form
    Layout
        display as text
            header3 of "ProcessingCounts"
        visible when (HasCustomersCreated)
            paragraph
                visible when (RunTypeInterface)
                    RecordsProcessed
                        label is "InterfacedCustomersProcessed"
                visible when (RunTypeConversion)
                    RecordsProcessed
                        label is "ConversionCustomersProcessed"
                InterfacedCustomerCount
                    label is "Successful"
                visible when (not RunType.MassAdd)
                    CustomerErrorCount
                        label is "Errors"
                visible when (RunType.MassAdd)
                    DrivedMassAddCustomer
                        label is "Errors"
            blank line
            single column
                visible when (RunTypeInterface)
                    CustomerInterfaceCounts.OECustomerCount
                        label is "OrderEntryInterfacedCustomersProcessed"
                    TotalRecordsProcessed
                        label is "TotalRecordsProcessed"
                visible when (RunTypeConversion)
                    CustomerInterfaceCounts.OECustomerCount
                        label is "OrderEntryRecordsProcessed"
                    CustomerInterfaceCounts.EFTCustomerCount
                        label is "EFTRecordsProcessed"
                    CustomerInterfaceCounts.PeriodAmountCount
                        label is "PeriodAmountRecordsProcessed"
                    CustomerInterfaceCounts.BillToCount
                        label is "BillToRecordsProcessed"
                    CustomerInterfaceCounts.BankAccountCount
                        label is "BankAccountRecordsProcessed"
                    CustomerInterfaceCounts.ContactCount
                        label is "ContactRecordsProcessed"
                    CustomerInterfaceCounts.CommentCount
                        label is "CommentRecordsProcessed"
                    TotalConversionRecordsProcessed
                        label is "TotalRecordsProcessed"
        visible when (not HasCustomersCreated)
            visible when (RunTypeInterface)
                RecordsProcessed
                    label is "InterfacedCustomersProcessed"
            visible when (RunTypeConversion)
                RecordsProcessed
                    label is "ConversionCustomersProcessed"
            InterfacedCustomerCount
                label is "Successful"
            CustomerErrorCount
                label is "Errors"
