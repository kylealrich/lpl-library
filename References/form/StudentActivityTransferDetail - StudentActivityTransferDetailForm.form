StudentActivityTransferDetailForm is a Form
    is primary
    title is "<mode>TransferDetail"
    Actions
        action is Entered.Create
            action icon is create
        action is save
        action is save and new
        action is Entered.Delete
            action icon is delete
            hide when invalid
        action is next record
        action is previous record
        action is refresh
    Layout
        three column table
            column1
                paragraph
                    StudentActivitySchool
                        label is "School"
                paragraph
                    StudentActivityTransfer
                        label is "TransferNumber"
                paragraph
                    SchoolActivityAccount
                        label is "Activity"
                        compact format
                        select is SchoolActivities
                paragraph
                    TransferDetailAmount
                        label is "Amount"
                paragraph
                    Status
                        display as text
            column2
                blank line
                paragraph
                    StudentActivityTransfer.TransferDate
                paragraph
                    SchoolActivityAccount.Description
                        no label
                        display as text
            column3
                blank line
                paragraph
                    StudentActivityTransfer.Description
