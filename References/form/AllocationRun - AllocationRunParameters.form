AllocationRunParameters is a Form
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        AllocationControl
                    paragraph
                        Allocation
                    paragraph
                        AllocationGroup
                    paragraph
                        AllocationControl.Calendar
                            label is "Calendar"
                    paragraph
                        visible when (Status.Journalized)
                            visible when (not IsTrueCost)
                                AutoReverseDate
                    paragraph
                        visible when (Status.Canceled)
                            visible when (WithGLJournal)
                                ReverseOriginalJournal
                    paragraph
                        NumberOfBatches
                            label is "BatchSize"
                column2
                    visible when (AllocationControl.Type.Actuals)
                        CurrencyTable
                    paragraph
                        AllocationPeriod
                    visible when (RunName not entered)
                        paragraph
                            PostingDate
                        paragraph
                            create stamp
                                label is "RunDate/Time"
                            RunEndTimeStamp
                    visible when (RunName entered)
                        paragraph
                            MultiMonthAllocation
                                label is "Multi-\\MonthAllocation"
                        paragraph
                            create stamp
                                label is "RunDate/Time"
                            RunEndTimeStamp
                    paragraph
                        visible when (RunName entered)
                            visible when (not MultiMonthAllocation)
                                PostingDate
                            visible when (MultiMonthAllocation)
                                RunStartDate
                                    label is "FromAllocationPostDate"
                                RunEndDate
                                    label is "ToAllocationPostDate"
                column3
                    paragraph
                        FromStep
                    paragraph
                        ToStep
                    paragraph
                        GenerateListingData
                            label is "GenerateReports"
                    paragraph
                        GenerateSourceValue
                            label is "IncludeSourceDetails"
                    paragraph
                        visible when (IsTrueCost)
                            UseCapacityLedger
                                label is "IsCapacity"
                        visible when (IsTrueCost)
                            PublishForBirstReport
                                label is "Publish_for_BirstReport"
