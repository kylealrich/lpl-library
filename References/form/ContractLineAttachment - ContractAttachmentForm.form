ContractAttachmentForm is a Form
    is primary
    title is "ContractAttachment"
    Layout
        display as text
            four column distributed
                column1
                    paragraph
                        Contract.RepresentativeText
                            label is "Contract"
                        ContractLine
                            label is "Line"
                    paragraph
                        ContractLine.ItemNumber
                            label is "Item"
                        ContractLine.ItemDescription
                            label is "Description"
                        ContractLine.UOM.UnitOfMeasure
                            label is "UOM"
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                    visible when (ContractLine.VendorItem entered)
                        ContractLine.VendorItem
                column3
                    Contract.WorkingContractID
                column4
                    visible when (LineAttachmentExists)
                        Source
                            display as tag
                                color of blue when (Source.Manual)
                                color of green when (Source.Event)
                                color of turquoise when (Source.EventQuestionResponse)
        header2 of "_"
        paragraph
            visible when (LineAttachmentExists)
                Sequence
                    label is "AttachmentNumber"
                    display as text
            Name
        single column
            Description
                use text area of 5 lines
        paragraph
            visible when (LineAttachmentExists)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        visible when (LineAttachmentExists)
            three column
                EmailAttachment
                    label is "IncludeAttachment_inEmail"
                SupplierCanView
                visible when (EligibleForSourcing)
                    SSAttachment
                        label is "SendAttachment_toSourcing"
