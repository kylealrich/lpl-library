MobileTransactionLineContext is a Form
    title is "TransactionLine"
    Layout
        display as text
            two column distributed
                InventoryTransaction.MobileTransactionCompany
                    label is "Company"
                InventoryTransaction.MobileTransactionLocation
                    label is "Location"
                TransactionSystemCode
                    label is "SystemCode"
                InventoryTransaction
                    label is "Transaction"
                visible when (InventoryTransaction.IsInventoryIssuesOrInventoryTransfer)
                    InventoryTransaction.FromToCompanyLocation.FromToCompany
                        label is "ToCompany"
                visible when (InventoryTransaction.IsInventoryIssues)
                    InventoryTransaction.FromToCompanyLocation.RequestingLocation
                        label is "RequestingLocation"
                visible when (InventoryTransaction.IsInventoryTransfer)
                    InventoryTransaction.FromToCompanyLocation.FromToLocation
                        label is "ToLocationName"
                Status
                InventoryTransaction.InventoryDocumentType
                    label is "DocumentType"
                InventoryTransactionLine.LineNumber
                    label is "Line"
                visible when (InventoryTransaction.IsInventoryIssuesOrInventoryTransfer)
                    InventoryTransaction.FromToCompanyLocation.FromToCompany.Name
                        label is "ToCompanyName"
                visible when (InventoryTransaction.IsInventoryIssues)
                    InventoryTransaction.FromToCompanyLocation.RequestingLocation.Name
                        label is "RequestingLocationName"
                visible when (InventoryTransaction.IsInventoryTransfer)
                    InventoryTransaction.FromToCompanyLocation.FromToLocation.Name
                        label is "ToLocationName"
                    InventoryTransaction.IntransitTransfer
