TrueCostRunParameterCompositeForm is a CompositeForm
    is primary
    title is "True\\CostRunParameter"
    context form is Header
        background is theme color
    Actions
        action is RunAllocation
            label is "Calculate"
            valid when (Status.Incomplete)
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    RunOptions is a Panel
        form is TrueCostRunParameterForm
    SourceBalanceOptionNewExpenseSnapshot is a Panel
        title is "ExpenseSnapshots"
        visible when (IsNotcompleteNewExpenseSnapshot)
        list is TrueCostRunParameterPeriodRel.TrueCostRunParameterPeriodList
    SourceBalanceOptionExistingExpenseSnapshot is a Panel
        title is "ExpenseSnapshots"
        visible when (IsCompleteNewExpenseSnapshot)
        list is TrueCostRunParameterPeriodRel.TrueCostRunParameterExistingList
    SourceBalanceOptionExistingExpenseSnapshotComplete is a Panel
        title is "ExpenseSnapshots"
        visible when (Status.Complete)
        list is TrueCostRunParameterPeriodRel.TrueCostRunParameterPeriodDetailList
