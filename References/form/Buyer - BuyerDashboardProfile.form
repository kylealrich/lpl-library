BuyerDashboardProfile is a Form
    Layout
        display as text
            three column
                column1
                    Buyer.Employee.Name.PreferredFirstAndLastName
                        label is "Name"
                        header2
                    HROrganization.HROrgAndDescription
                        label is "Organization"
                    Reference1
                column2
                    Buyer.Employee.Employee
                        label is "ID"
                    paragraph
                        Buyer.Employee.EmployeeWorkEmailAddress
                            label is "WorkEmail"
                        visible when (Buyer.Employee.EmployeeWorkEmailAddressExists)
                            button of icon.mail
                                link is "mailto:<Buyer.Employee.EmployeeWorkEmailAddress>"
                    Reference2
                column3
                    paragraph
                        DerivedStatusDisplay
                            no label
                            display as tag
                                color of red when (not IsActive)
                                color of green when (IsActive)
                    paragraph
                        Buyer.Employee.EmployeeWorkTelephone
                            label is "WorkPhone"
                        visible when (Buyer.Employee.EmployeeWorkPhoneExists)
                            button of icon.phone
                                link is "tel:<Buyer.Employee.EmployeeWorkTelephone>"
