ContractChangeOrder is an ActionForm
    action is CreateChangeOrder
        on completion navigate to ChangeOrderNav
    title is "CreateChangeOrder"
    Layout
        display as text
            single column
                ContractGroup.RepresentativeText
                RepresentativeText
        single column
            ParmTitle
            ParmNumber
            ParmDescription
            ParmDate
            visible when (ContractStatus.Active)
                ParmAddendumAmendment
            visible when (HasSubcontractors)
                paragraph
                    ParmSubcontractor
                    ParmSubcontractor.SubName
                        no label
                        display as text
            visible when (UseCommitments)
                visible when (not UserIsSupplier)
                    ParmCommitAllowance
            ParmDocument.File
                label is "Document"
