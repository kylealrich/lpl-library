TrueCostAllocationRun is a CompositeForm
    title is "AllocationRun<AllocationRun>"
    context form is TrueCostMain
    show panel control on left
    Actions
        action is GetReconciliationData
            hide when invalid
        action is Finalized.Unfinalize
            hide when invalid
        action is Completed.JournalizeWithReverse
            hide when invalid
        action is Completed.Journalize
            hide when invalid
        action is Finalized.Journalize
            hide when invalid
        action is Completed.Finalize
            hide when invalid
        action is GenerateCosts
            hide when invalid
        action is GenerateCostBehaviorSummary
            hide when invalid
        action is RemoveCosts
            hide when invalid
        action is Started.DeleteRun
            hide when invalid
            valid when (Status.Started)
        action is Completed.DeleteRun
            hide when invalid
            valid when (Status.Completed)
        action is Journalized.Cancel
            hide when invalid
        action is Failed.DeleteRun
            hide when invalid
            valid when (Status.Failed)
        action is refresh
    Parameters is a Panel
        form is TrueCostAllocationRunParameters
    Transactions is a Panel
        visible when (NoJournalizedTransactions)
        list is AllocationTransactionDetail set.AllocationRunDetailList
    JournalizedTransactions is a Panel
        visible when (not NoJournalizedTransactions)
        list is AllocationJournalizedDetail set.AllocationRunDetailList
    BudgetErrors is a Panel
        title is "BudgetErrors"
        visible when (BudgetErrorsExist)
        list is BudgetEditErrorRel.BudgetEditErrorList
    Reconciliation is a Panel
        visible when (ShowReconciliation)
        form is TrueCostReconciliation
    CostBehavior is a Panel
        visible when (CostBehaviorSummaryStatusGenerated)
        list is TrueCostCostBehaviorSummaryRel.TrueCostCostBehaviorSummaryList
    UnitCostByCount is a Panel
        visible when (CostsStatus.Ready)
        list is CostsRel.UnitCostByCount
    UnitCostByDuration is a Panel
        visible when (CostsStatus.Ready)
        list is CostsRel.UnitCostByDuration
    UnitCostByCountGenerating is a Panel
        title is "UnitCostByCount-Generating"
        visible when (CostsStatus.Generating)
        list is CostsRel.UnitCostByCount
    UnitCostByDurationGenerating is a Panel
        title is "UnitCostByDuration-Generating"
        visible when (CostsStatus.Generating)
        list is CostsRel.UnitCostByDuration
    UnitCostByCountDeleting is a Panel
        title is "UnitCostByCount-Deleting"
        visible when (CostsStatus.Deleting)
        list is CostsRel.UnitCostByCount
    UnitCostByDurationDeleting is a Panel
        title is "UnitCostByDuration-Deleting"
        visible when (CostsStatus.Deleting)
        list is CostsRel.UnitCostByDuration
    CapacityVolumes is a Panel
        visible when (UseCapacityLedger)
        list is TrueCostCapacityVolumesRel.TrueCostCapacityVolumesList
    ExpenseSnapshot is a Panel
        visible when (WithAllocationSnapshot)
        list is AllocationSnapshot.AllocationSnapshotDetailRel.ExpenseSnapshotDetailList
