ArticleContext is a Form
    title is "ContractArticle"
    Layout
        display as text
            three column distributed
                column1
                    Contract.RepresentativeText
                    visible when (ContractArticleExists)
                        RepresentativeText
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                column3
                    paragraph
                        Contract.WorkingContractID
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        paragraph distributed
            visible when (DisplayDraftUpdatedMessage)
                text of "ViewTheProposedUpdatesToThisArticle"
                    link is CurrentChangesNav
            visible when (DisplayPendingUpdateMessage)
                text of "ViewThePendingUpdatesToThisArticle"
                    link is CurrentChangesNav
            visible when (NoModification)
                text of "ArticleDoesNotAllowModification"
                    bold
        visible when (DisplayButtons)
            paragraph distributed
                button of "SupplierUpdateArticle"
                    visible when (SupplierEditArticleActionValid)
                    action is SupplierUpdateArticle
                button of "BuyerUpdateArticle"
                    visible when (BuyerEditArticleActionValid)
                    action is BuyerUpdateArticle
                button of "BuyerDeleteArticle"
                    visible when (BuyerAddendumDeleteTermButtonValid)
                    action is BuyerCreateDeleteUpdateRecord
                button of "SupplierDeleteArticle"
                    visible when (SupplierAddendumDeleteTermButtonValid)
                    action is SupplierCreateDeleteUpdateRecord
