PerformTierCalculations is an ActionForm
    action is PerformTierCalculations
    Layout
        single column
            RepresentativeText
                display as text
        paragraph
            EffectiveDate
                display as text
            ExpirationDate
                display as text
        paragraph
            ParmDateRange.Begin
                label is "DocumentDateRange"
            ParmDateRange.End
                no label
        paragraph
            ParmTierMemberCompany
            ParmTierMemberLocation
                no label
            ParmTierMemberLocation.Name
                no label
                display as text
        paragraph
            ParmTier
                select is TiersForQualifierSelection
            ParmTier.TierTitle
                no label
                display as text
            ParmQualifier
                no label
                select is QualifiersForSelection
            visible when (ParmQualifier.QualifierHasItems)
                ParmOnlyForTier
            visible when (ParmQualifier.TargetedQualifier)
                ParmQualifier.TargetedPurchasesFromDate
                    display as text
                ParmQualifier.TargetedPurchasesToDate
                    display as text
        visible when (HasPercentTierQualifier)
            single column
                CalculateCompetitive
        visible when (ParmQualifier entered)
            visible when (ParmQualifier.PurchaseBy.InvoicePrice)
                single column
                    text of "CalculationsWillBeDoneAgainstInvoiceDetails"
                        italics
            visible when (ParmQualifier.PurchaseBy.PurchasePrice)
                single column
                    text of "CalculationsWillBeDoneAgainstPurchaseOrderLines"
                        italics
        visible when (ParmQualifier not entered)
            visible when (first TierQualifierRel.PurchaseBy.InvoicePrice)
                single column
                    text of "CalculationsWillBeDoneAgainstInvoiceDetails"
                        italics
            visible when (first TierQualifierRel.PurchaseBy.PurchasePrice)
                single column
                    text of "CalculationsWillBeDoneAgainstPurchaseOrderLines"
                        italics
        single column
            text of "VerifyThatLoadInformationProcessesHaveBeenRunForDateRangeThatIsEnteredHere"
                italics
