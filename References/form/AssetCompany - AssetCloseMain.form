AssetCloseMain is a Form
    title is "<Company>_-_<Company.Name>"
    Actions
        action is refresh
            action icon is validate
    Layout
        visible when (CloseControlIsActive)
            paragraph
                AMSystemClosingControlRel.ClosedPeriod.PeriodName
                    label is "LastAccountingEntityPeriodClosed"
        two column distributed
            column1
                Released
                    bold
                    display as tag
                        color of green when (Released)
                        color of gray when (not Released)
            column2
                valid when (not Released)
                    button of "ReleaseAssets" with icon.submit
                        action is AssetBatchUpdateResultRel.ReleaseAssets
                        label is "ReleaseAsssets"
                        center
        paragraph
            header3 of "CloseBooks"
                underline color of black
        two column distributed
            column1
                DepreciationCalculated
                    bold
                    mouse over text is "<CloseBookMessage>"
                    display as tag
                        color of green when (DepreciationCalculated)
                        color of gray when (not DepreciationCalculated)
            column2
                button of "CalculateDepreciation" with icon.calculator
                    action is AssetBatchUpdateResultRel.DepreciationCalculation
                    label is "DepreciationCalculation"
                    center
        two column distributed
            column1
                AssetPeriodClosed
                    bold
                    mouse over text is "<CloseBookClosePeriodMessage>"
                    display as tag
                        color of green when (AssetPeriodClosed)
                        color of gray when (not AssetPeriodClosed)
            column2
                button of "ClosePeriod" with icon.confirm
                    action is AssetBatchUpdateResultRel.AssetPeriodClose
                    label is "AssetPeriodClose"
                    center
        single column
            YearEndInProgress
                bold
                display as tag
                    color of gray when (not YearEndInProgress)
                    color of yellow when (YearEndInProgress)
