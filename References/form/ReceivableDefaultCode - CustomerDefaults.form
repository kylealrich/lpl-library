CustomerDefaults is a CompositeForm
    is primary
    title is "<CustomerDefaultsTitle>"
    context form is CustomerDefaultsContext
        background is theme color
    Main is a Panel
        form is Main
    Billing is a Panel
        form is BillingCustomerFields
    OrderEntry is a Panel
        visible when (HasBillingCompany)
        form is OrderEntryCustomerFields
    Application is a Panel
        form is Application
    Statement is a Panel
        form is Statement
    FinanceCharge is a Panel
        form is Finance
    DunningAdvanced is a Panel
        form is DunningAdvanced
