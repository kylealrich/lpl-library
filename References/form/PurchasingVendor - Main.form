Main is a Form
    Layout
        single column
            ContactName
            PhoneNumber
            paragraph
                FaxNumber.InternationalPrefix
                    label is "FaxCountry/\\JurisdictionCode"
                FaxNumber.SubscriberNumber
                    label is "FaxNumber"
                FaxNumber.Extension
                    label is "Extension"
            EmailAddress
                label is "Email"
        paragraph
            Buyer
                label is "DefaultBuyer"
            Buyer.Employee.PresentationNameSnapshot
                no label
                display as text
        two column
            column1
                header2 of "OriginalPOIssue"
                IssueMethod
                EDINumber
                POCode
                    label is "DefaultP\\OCode"
                blank line
            column2
                header2 of "RevisedPOIssue"
                RevisedIssueMethod
                    label is "IssueMethod"
                RevisedEDINumber
                    label is "E\\D\\INumber"
                RevisedEDITransaction
                    label is "E\\D\\ITransaction"
                RevisionsInclude
                    label is "Include"
        two column
            column1
                header2 of "Limits"
                two column
                    column1
                        OpenPurchaseLimit
                        MaximumOrderAmount
                    column2
                        MinimumOrderWeight
                            label is "MinimumWeightPerP\\O"
                        MinimumPurchaseOrderAmount
                        OpenPurchaseAmount
                            display as text
            column2
                header2 of "Tolerances"
                two column
                    column1
                        UndershipmentTolerancePercentage
                        OvershipmentTolerancePercentage
                    column2
                        UndershipmentToleranceOption
                        OvershipmentToleranceOption
                        OrderMinimumAmountEdit
                            label is "VendorMinimumOrderEdit"
                        DeliveryToleranceOption
                            when value changed
                                refresh IsUseDeliveryTolerance
                        visible when (IsUseDeliveryTolerance)
                            DeliveryToleranceDays
                                show up to 10 characters
                                raise blue alert when (IsZeroDeliveryToleranceDays)
                                    mouse over text is "BlankValueEqualsZeroToleranceDays"
                                when value changed
                                    refresh IsZeroDeliveryToleranceDays
