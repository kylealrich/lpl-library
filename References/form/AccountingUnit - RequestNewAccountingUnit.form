RequestNewAccountingUnit is an ActionForm
    action is RequestNewAccountingUnit
    title is "NewAccountingUnit"
    Layout
        visible when (not actor.initiator)
            header2 of "ReviewNew<FinanceEnterpriseGroup.AccountingUnitLabel>"
        visible when (actor.initiator)
            header4 of "ThisRequestWillBeRoutedForApproval;AfterApprovalThe<FinanceEnterpriseGroup.FinanceDimension1Label>WillBeCreated."
        header3 of "RequestDetails"
        two column distributed
            column1
                visible when (not actor.initiator)
                    display as text
                        RequestedBy
                        button of "<RequesterPhone.SubscriberNumber>"
                            link is "tel:<RequesterPhone.SubscriberNumber>"
                            label is "Phone"
                            display as link
                        blank line
                        RequestPriority
                            label is "Priority"
                visible when (actor.initiator)
                    RequestPriority
                        label is "Priority"
            column2
                visible when (not actor.initiator)
                    display as text
                        RequesterActor
                            label is "ID"
                        button of "<RequesterEmail>"
                            link is "mailto:<RequesterEmail>"
                            label is "Email"
                            display as link
                        blank line
                        NeededBy
                visible when (actor.initiator)
                    NeededBy
        header3 of "<FinanceEnterpriseGroup.AccountingUnitLabel>"
        two column distributed
            column1
                paragraph
                    FinanceEnterpriseGroup
                        display as text
            column2
                paragraph
                    AccountingEntity
                        label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
                    AccountingEntity.Name
                        no label
                        display as text
        header3 of "Main"
        two column distributed
            column1
                CreateAccountingUnitType
                    label is "Type"
        two column distributed
            column1
                PrmAccountingUnit
                    label is "<FinanceEnterpriseGroup.AccountingUnitLabel>"
                visible when (CreateAccountingUnitType.Summary)
                    DisplayAccountingUnit
                        label is "Display<FinanceEnterpriseGroup.AccountingUnitLabel>"
                        display only
                visible when (CreateAccountingUnitType.Posting)
                    ParentAccountingUnit
                        label is "ParentAccountingUnit"
                        select is AccountingUnitSummaryRel.SummaryAccountingUnits
            column2
                Description
        visible when (CreateAccountingUnitType.Summary)
            single column
                BudgetIdentifier
        visible when (CreateAccountingUnitType.Posting)
            single column
                Active
                SystemAccountingUnit
                    label is "System<FinanceEnterpriseGroup.AccountingUnitLabel>"
                InterEntityAccountingUnit
                IncludeInBudgetEdit
        header3 of "AddressInformation"
        two column
            AddressCode
            AddressCode.Description
                no label
                display as text
        visible when (AddressCode entered)
            single column
                AddressCode.PersonResponsible
                    label is "PersonResponsible"
                    display as text
                AddressCode.PostalAddress.Country
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine1
                    label is "StreetAddress"
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine2
                    no label
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine3
                    no label
                    display as text
                AddressCode.PostalAddress.DisplayAddressLine4
                    no label
                    display as text
                AddressCode.PostalAddress.Municipality
                    label is "City"
                    display as text
                AddressCode.PostalAddress.StateProvince
                    label is "State/Province"
                    display as text
                AddressCode.PostalAddress.PostalCode
                    label is "PostalCode"
                    display as text
                AddressCode.PostalAddress.County
                    label is "County/District"
                    display as text
                AddressCode.PostalAddress.Type
                    label is "Type"
                    display as text
                AddressCode.TelephoneNumber
                    label is "TelephoneNumber"
                    display as text
                AddressCode.FaxNumber
                    label is "FaxNumber"
                    display as text
                AddressCode.EmailAddress
                    label is "EmailAddress"
                    display as text
        header3 of "ActionComment"
        single column
            action comment
                no label
                use text area
