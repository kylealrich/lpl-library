AdjustmentMaintenanceReport is an ActionForm
    action is AdjustmentMaintenanceReport
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        two column distributed
            column1
                AdjPostDateFr
                    label is "FromAdjustPostDate"
            column2
                AdjPostDateTo
                    label is "ToAdjustPostDate"
        single column
            ReasonCode
        single column
            text of "Or"
        single column
            ReasonType
        paragraph
            CreditAnlyst
                label is "CreditAnalyst"
                select is CreditAnalyst
            CreditAnlyst.Name
                no label
                display as text
        single column
            Contract
        paragraph
            Activity
                label is "Project"
            Activity.Description
                no label
                display as text
        paragraph
            CurrencyCd
                label is "Currency"
            CurrencyCd.Description
                no label
                display as text
        single column
            AcoCurrDisplay
                label is "CurrencyDisplay"
        single column
            Status
        single column
            SortOrder
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AdjustmentMaintenanceReportReport_RDG
            column2 of 25%
                AdjustmentMaintenanceReportReport_XPT
