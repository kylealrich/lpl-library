BookContext is a Form
    Layout
        three column independent
            column1
                FinanceEnterpriseGroup
                Currency
                PostCurrency
                    label is "TransactionCurrency"
                DepreciationType
                visible when (DepreciationType.ClassLevel)
                    ClassBalanceType
                TaxBook
            column2
                paragraph
                    Book
                    Description
                        no label
                Convention
                Ledger
                ImpairmentBook
                    select is ImpairmentBooks
                visible when (DepreciationType.ClassLevel)
                    ReportingBasis
                BookRegulation
            column3
                Active
                    label is "Active"
                        left of field
                MethodSwitch
                    label is "MethodSwitch"
                        left of field
                TrackDepreciationHistory
                    label is "TrackDepreciationHistory"
                        left of field
                Impairment
                    label is "UseForImpairment"
                        left of field
                PostHistory
                    label is "PostHistory"
                        left of field
