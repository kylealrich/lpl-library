RemoveTransaction is an ActionForm
    action is RemoveTransaction
    title is "RemoveTransaction"
    Layout
        two column
            column1
                PlaceOnHold
                visible when (Transfer)
                    GLTransactionDetail.FinanceCodeBlock
                        label is "FinanceStructure"
                        display as text
                        compact format
                    GLTransactionDetail.PostingDate
                        display as text
                    GLTransactionDetail.TransactionAmount
                        display as text
                    GLTransactionDetail.UnitsAmount
                        display as text
                    GLTransactionDetail.Description
                        display as text
            column2
                visible when (EligibleToTransfer)
                    Transfer
                visible when (Transfer)
                    PrmFinanceCodeBlock
                        label is "ToFinanceStructure"
                        compact format
                    PrmPostingDate
                        label is "ToPostingDate"
                    PrmTransactionAmount
                        label is "ToTransactionAmount"
                    PrmUnitsAmount
                        label is "ToUnitsAmount"
                    PrmDescription
                        label is "ToDescription"
