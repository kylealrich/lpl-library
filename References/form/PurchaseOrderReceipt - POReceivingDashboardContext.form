POReceivingDashboardContext is a Form
    Layout
        five column distributed
            column1
                visible when (HasPicture)
                    Vendor.Logo.File
                        no label
                        display as portrait image
            column2
                paragraph
                    Company.RepresentativeText
                        display as text
                paragraph
                    button of "<PurchaseOrder>"
                        link is PODashboard
                        label is "PurchaseOrder"
                        display as link
                    PurchaseOrder.PORelease
                        label is "Release"
                        display as text
                    PurchaseOrder.POCode
                        label is "Code"
                        display as text
                paragraph
                    ReferenceNumber
                        label is "Reference"
                        display as text
                    Status
                        label is "Status"
                        display as text
            column3
                paragraph
                    ReceivedDate
                        label is "DateAndTimeReceived"
                        display as text
                paragraph
                    PurchaseOrderReceipt
                        label is "Receipt"
                        display as text
                paragraph
                    ShipToLocation
                        label is "ReceivedLocation"
                        display as text
                    ShipToLocation.Name
                        no label
                        display as text
                paragraph
                    Carrier
                        display as text
                    Carrier.VendorName
                        no label
                        display as text
            column4
                paragraph
                    Vendor.RepresentativeText
                        display as text
                paragraph
                    PurchaseOrder.PurchaseFromLocation
                        label is "PurchaseFrom"
                        display as text
                    PurchaseFromLocation.VendorName
                        no label
                        display as text
                paragraph
                    ShipToArriveDate
                        label is "ShipToArrive"
                        display as text
            column5
                PurchaseOrder.Buyer.RepresentativeText
                    label is "Buyer"
                    display as text
                PurchaseOrder.Buyer.Employee.EmployeeWorkTelephone
                    label is "WorkPhone"
                    display as text
                MatchReferenceNumber
                    display as text
                visible when (LineHasBuyerMessageCondition)
                    BuyerMessages
                        no label
                        display as tag
                            color of red
