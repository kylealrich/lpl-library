MVenLocationContext is a Form
    title is "VendorLocationContext"
    Layout
        two column table
            column1
                display as text
                    VendorGroup
                    Vendor
            column2
                display as text
                    VendorGroup.Description
                    Vendor.VendorName
        single column
            VendorLocation
                label is "Location"
            visible when (VendorLocation entered)
                VendorName
                    label is "LocationName"
            Status
            visible when (OnHold)
                text of "VendorLocationIsOnHold"
                    bold
                    color of red
            visible when (LocationOnHold)
                paragraph
                    text of "VendorClaimsChargebackHold:"
                        bold
                        color of red
                    VendorClaimHoldCode
                        no label
                        display as text
            AddressEffectiveDate
