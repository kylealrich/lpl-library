PositivePayFileCreation is an ActionForm
    action is PositivePayFileCreation
    Layout
        header2 of "Main"
        single column
            CashManagementGroup
        three column
            CashCode
            CashCode.Description
                no label
                display as text
            CashCode.Currency
                no label
                display as text
        two column
            CcgCashCodeGrp
                label is "CashCodeGroup"
                select is CashCodeGroup
            CcgCashCodeGrp.Description
                no label
                display as text
        blank line
        blank line
        two column
            BankInstCode
                label is "TransactionCode"
                select is CashPayments
            BankInstCode.Description
                no label
                display as text
        single column
            ReportOption
        single column
            ExcludeStaleDateStopVoid
                label is "ExcludeVoidedOrStopPaidStaleDateRecords"
        header2 of "Options"
        single column
            DateFormat
            IncludeDecimal
                label is "IncludeDecimals"
        header2 of "Report_onStatusOptions"
        single column
            ReportOnOpen
                label is "Open"
            ReportOnVoid
                label is "Void"
            ReportOnPendingStopPay
                label is "PendingStopPayConfirmation"
            ReportOnStop
                label is "StopPayment"
            ReportOnStale
                label is "StaleDate"
            ReportOnEscheat
                label is "Escheatment"
            FileName
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PositivePayFileCreationReport_RDG
            column2 of 25%
                PositivePayFileCreationReport_XPT
