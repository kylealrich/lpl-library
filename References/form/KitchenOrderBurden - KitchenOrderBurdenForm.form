KitchenOrderBurdenForm is a Form
    title is "KitchenOrderBurden"
    Layout
        single column
            paragraph
                BurdenCode
                BurdenCode.Description
                    no label
                    display as text
            BurdenCode.BurdenType
                display as text
            visible when (BurdenCode.BurdenType.FlatAmount)
                FlatAmount
            visible when (BurdenCode.BurdenType.AmountPerFinishedGoodsUnit)
                AmountPerUnit
            visible when (BurdenCode.BurdenType.AmountPerBurdenUnit)
                AmountPerUnit
                paragraph
                    PerBurdenUnitQuantity
                        label is "PerBurdenUnitQuantity"
                    PerBurdenUnitMultiplier
                        label is "Multiplier"
            visible when (BurdenCode.BurdenType.PercentOfFinishedGoodsInventoryCost)
                PercentageOfInventoryCost
