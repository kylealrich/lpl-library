RequestProjectStatusChange is an ActionForm
    action is RequestProjectStatusChange
    title is "Request<FinanceEnterpriseGroup.ProjectLabel>StatusChange"
    Layout
        visible when (actor.initiator)
            header2 of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_updated"
        visible when (not actor.initiator)
            display as text
                single column
                    RequestedBy
                two column table
                    column1
                        button of "<RequesterEmail>"
                            link is "mailto:<RequesterEmail>"
                            label is "Email"
                            display as link
                        NeededBy
                    column2
                        button of "<RequesterPhone.SubscriberNumber>"
                            link is "tel:<RequesterPhone.SubscriberNumber>"
                            label is "Phone"
                            display as link
                        RequestPriority
                            label is "Priority"
                            display as tag
                                color of red when (RequestPriority.High)
                                color of yellow when (RequestPriority.Medium)
                                color of green when (RequestPriority.Low)
        visible when (actor.initiator)
            two column table
                column1 of 50%
                    RequestPriority
                        label is "Priority"
                column2 of 50%
                    NeededBy
        two column table
            column1 of 40%
                DisplayProject
                    label is "<FinanceEnterpriseGroup.ProjectLabel>"
                    display as text
                ProjectStatus
                    label is "<FinanceEnterpriseGroup.ProjectLabel>Status"
                    select is ProjectStatusSelectList
                    show up to 15 characters
            column2 of 60%
                Description
                    display as text
                ProjectStatus.Description
                    display as text
        header2 of "ActionComment"
        single column
            action comment
                no label
                use text area
