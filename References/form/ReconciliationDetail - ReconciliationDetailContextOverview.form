ReconciliationDetailContextOverview is a Form
    Layout
        two column distributed
            column1
                ReferenceNumber
                Description
                paragraph
                    TransactionDate
                    visible when (DetailType.Amortization)
                        PostingDate
                paragraph
                    DetailAmount
                visible when (ReconcilingItemReasonCodeRequired)
                    ReconciliationReason
            column2
                visible when (not DetailType.Amortization)
                    paragraph
                        Recurring
                paragraph
                    StartPeriod
                        label is "StartPeriod"
                        compact format
                    StartPeriod.PeriodName
                        no label
                        display as text
                visible when (not Recurring)
                    paragraph
                        EndPeriod
                            label is "EndPeriod"
                            compact format
                        EndPeriod.PeriodName
                            no label
                            display as text
                visible when (DetailType.Amortization)
                    paragraph
                        CatchUpPeriod
                            label is "CatchUpPeriod"
                            compact format
                        CatchUpPeriod.PeriodName
                            no label
                            display as text
                visible when (not Recurring)
                    paragraph
                        PeriodTerm
                        visible when (DetailType.Amortization)
                            AmortizationSpread
        visible when (not DetailType.Amortization)
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                Attachment.File
        visible when (DetailType.Amortization)
            header3 of "PayablesInvoiceInformation"
            paragraph
                VendorInvoice.PayablesCompany
                VendorInvoice.PayablesInvoice
                    select is PayablesInvoiceAmortizationList
                VendorInvoice.PayablesInvoiceDistribution
                    select is PayablesInvoiceDistributionForReconciliationDetailList
            visible when (VendorInvoice.PayablesInvoice entered)
                single column
                    button of "<VendorInvoice.PayablesInvoice.Invoice>"
                        link is InvoiceNavigation
                        label is "Invoice"
                        display as link
                five column
                    column1
                        VendorInvoice.PayablesInvoice.InvoiceDate
                            label is "InvoiceDate"
                            display as text
                    column2
                        VendorInvoice.PayablesInvoice.DistributionDate
                            label is "PostDate"
                            display as text
                    column3
                        VendorInvoice.PayablesInvoice.Vendor.VendorName
                            label is "Vendor"
                            display as text
                    column4
                        VendorInvoice.PayablesInvoice.InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                            display as text
                    column5
                        InvoicePrepaidAmount
                            label is "InvoiceDistributionAmount"
                            display as text
            header3 of "AmortizationExpenseAccount"
            single column
                AmortizationExpenseAccount
                    compact format
                visible when (AmortizationExpenseAccount entered)
                    AmortizationExpenseAccount.CompactDescription
                        no label
                        display as text
                text of "-or-"
                paragraph
                    AllocationCode
                        select is PercentCashAllocationCodes
                    AllocationCode.Description
                        no label
                        display as text
            blank line
            single column
                DistributionDescription
