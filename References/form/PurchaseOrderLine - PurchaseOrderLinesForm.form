PurchaseOrderLinesForm is a Form
    title is "PurchaseOrderLine"
    Layout
        paragraph
            Company
        paragraph
            PurchaseOrder
        paragraph
            PurchaseOrderLine
                label is "Line"
                select is LinesForAPOByItem
        paragraph
            Item
        paragraph
            Description
        paragraph
            ReceivedQuantity
        paragraph
            ReturnedQuantity
            EnteredBuyUOM
                no label
                display as text
        visible when (IsCatchWeightItem)
            paragraph
                CatchWeightQuantity
                Item.StockUOM
                    no label
                    display as text
