CreateForecastWizardSummary is a Form
    title is "Summary"
    Layout
        display as text
            paragraph
                CashForecast
                Status
                    display as text
            single column
                Description
            paragraph
                ForecastDateRange.Begin
                    label is "StartDate"
                text of "-"
                ForecastDateRange.End
                    label is "EndDate"
            single column
                RollingForecast
                visible when (RollingForecast)
                    ForecastCreationParameter.RollingFrequency
                        display as horizontal radio buttons
                        display as required when (true)
                Simulated
            single column
                visible when (not HasCashForecastAccounts)
                    BlankField
                        no label
                        raise yellow alert when (not HasCashForecastAccounts)
                            mouse over text is "<NoAccountsSelectedMessage>"
                visible when (not HasCashForecastCategories)
                    BlankField
                        no label
                        raise yellow alert when (not HasCashForecastCategories)
                            mouse over text is "<NoCategoriesSelectedMessage>"
            two column
                column1
                    button of "View_AccountAnd_CategoryDetails"
                        link is CashForecastDetails
                        display as link
                column2
                    button of "BuildCashForecast"
                        visible when (CanBuildForecast)
                        action is New.BuildForecast
                        is primary
