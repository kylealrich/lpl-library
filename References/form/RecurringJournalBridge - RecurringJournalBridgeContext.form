RecurringJournalBridgeContext is a Form
    title is "RecurringJournalBridge"
    Layout
        single column
            FrTransactionCodeBlock
                label is "FromFinanceStructure"
                display only
                compact format
        single column
            visible when (not RecurringJournalProcessed)
                ToTransactionCodeBlock
                    label is "ToFinanceStructure"
                    compact format
            visible when (RecurringJournalProcessed)
                ToTransactionCodeBlock
                    label is "ToFinanceStructure"
                    display only
                    compact format
        three column
            visible when (not RecurringJournalProcessed)
                TransactionAmount
                    label is "Transaction"
                UnitsAmount
                    label is "Unit"
            visible when (RecurringJournalProcessed)
                TransactionAmount
                    label is "Transaction"
                    display only
                UnitsAmount
                    label is "Unit"
                    display only
            CurrencyCode
                display only
        two column
            GeneralLedgerEvent
                label is "GlobalLedgerEvent"
                display only
            TransactionDate
                display only
        header2 of "CurrencyAmounts"
        ReportCurrencyAmount
            form is FinanceCurrencyAmountDisplayOnly
