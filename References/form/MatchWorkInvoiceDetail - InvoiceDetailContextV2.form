InvoiceDetailContextV2 is a Form
    Layout
        display as text
            two column
                column1
                    Item
                        label is "Item"
                    PayablesInvoiceDetail.VendorItem
                        label is "VendorItem"
                    Item.Description
                        label is "Description"
                    PurchaseOrderLine.LineNumber
                        label is "Line"
                column2
                    EnteredQuantity
                        label is "Quantity"
                    PayablesInvoiceDetail.EnteredUOM
                        label is "UOM"
                    EnteredUnitCost
                        label is "Cost"
                        display 2 decimals
                    DerivedExtendedMatchAmount
                        label is "Amount"
                        display 2 decimals
            header4 of "Totals"
            two column
                column1
                    text of "InvoiceLine"
                    text of "ReceiptLine"
                    text of "Difference"
                column2
                    DerivedExtendedMatchAmount
                    SelectedReceiptExtendedCost
                        label is "TotalSelectedReceiptLine"
                    SelectedReceiptLineDifference
            blank line
            display as text
                single column
                    text of "_"
                paragraph centered
                    visible when (not CreateChargeback)
                        button of "AddChargeback" with icon.add
                            action is SetChargeback
                paragraph
                    visible when (CreateChargeback)
                        ChargebackReason
                            label is "Reason"
                        button of "Remove"
                            action is SetChargeback
                            display as link
                visible when (MatchReconQueue.UseNet)
                    paragraph
                        text of "Net:<NetAmount>"
                            left align
                visible when (MatchReconQueue.UseOverbill)
                    paragraph
                        text of "Overbill:<OverbillAmount>"
                            left align
