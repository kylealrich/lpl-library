MobileCashForecastApproval is a CompositeForm
    title is "CashForecast"
    context form is MobileCashForecastApprovalContext
        background is theme color
    restrict action CopyForecast
    restrict action New.CreateCopy
    restrict action New.Create
    Actions
        action is refresh
            label is "_"
    Accounts is a Panel
        list is CashForecastAccount set.MobileCashForecastAccountApprovalList
    ApprovalComments is a Panel
        visible when (HasApprovalComments)
        list is CashForecastReasonCodeUsage set.CashForecastReasonCodeUsageList
