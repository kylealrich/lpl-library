MobileReceivingEntryForm is a Form
    title is "DetailForm"
    Actions
        action is save and close
            action icon is save
            label is "_"
    Layout
        visible when (PurchaseOrderReceiptLineRel.IsLotRequiredAtReceipt)
            two column distributed
                column1
                    PurchaseOrderReceiptLineRel.ItemDescriptionCardViewDisplay
                        label is "Item"
                        display as text
                    Lot
                        show up to 10 characters
                    LotExpirationDate
                    visible when (PurchaseOrderReceiptLineRel.IsBinTracked)
                        Bin
                            select is MobileBinsForALocationSelect
                    visible when (not PurchaseOrderReceiptLineRel.IsSerialRequiredAtReceipt)
                        Quantity
                column2
                    PurchaseOrderTransactionDetail.LineNumber
                        label is "Line"
                        display as text
                    Sublot
                    LotOnHold
                    visible when (PurchaseOrderReceiptLineRel.IsBinTracked)
                        blank line
                    PurchaseOrderReceiptLineRel.ReceivedUOM
                        label is "ReceivedUOM"
                        display as text
        visible when (PurchaseOrderReceiptLineRel.IsSerialRequiredAtReceipt)
            two column distributed
                column1
                    PurchaseOrderReceiptLineRel.ItemDescriptionCardViewDisplay
                        label is "Item"
                        display as text
                    Serial
                        show up to 10 characters
                column2
                    PurchaseOrderTransactionDetail.LineNumber
                        label is "Line"
                        display as text
                    PurchaseOrderReceiptLineRel.ReceivedUOM
                        label is "ReceivedUOM"
                        display as text
        visible when (PurchaseOrderReceiptLineRel.IsBinTracked)
            two column distributed
                column1
                    PurchaseOrderReceiptLineRel.ItemDescriptionCardViewDisplay
                        label is "Item"
                        display as text
                column2
                    PurchaseOrderTransactionDetail.LineNumber
                        label is "Line"
                        display as text
            single column
                Bin
                    select is MobileBinsForALocationSelect
            two column distributed
                column1
                    Quantity
                column2
                    PurchaseOrderReceiptLineRel.ReceivedUOM
                        label is "ReceivedUOM"
                        display as text
