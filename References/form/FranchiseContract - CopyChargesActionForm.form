CopyChargesActionForm is an ActionForm
    action is CopyChargesFromContract
    title is "CopyCharges"
    Layout
        blank line
        single column
            PrmFranchiseCompany
                label is "ContractCompany"
                display only
            PrmFranchiseCompany.BillingCompany.Name
                no label
                display as text
        header3 of "CopyFromFranchiseContract"
        single column
            visible when (PrmFranchiseCompany entered)
                PrmFranchiseCustomer
                    label is "Customer"
                    select is PrmFranchiseCompany.CustomerGroupField.CustomerGroup.Customer set.CustomerContextCompanySelectList
            visible when (PrmFranchiseCompany not entered)
                PrmFranchiseCustomer
                    label is "Customer"
                    select is CustomerContextCompanySelectList
            PrmCustomerShipTo
                label is "ShipTo"
            PrmFranchiseContract
                label is "Contract"
        header3 of "_________Or_________"
        header3 of "CopyFromStandardChargeGroups"
        single column
            PrmFranchiseChargeGroup
                label is "StandardChargeGroup"
