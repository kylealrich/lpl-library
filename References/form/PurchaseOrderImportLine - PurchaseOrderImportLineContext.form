PurchaseOrderImportLineContext is a Form
    Layout
        visible when (not RecordExists)
            three column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        PurchaseOrderImport
                        POCode
                column2
                    visible when (not PurchaseOrderImportExists)
                        RunGroup
                    LineNumber
                column3
                    RecordType
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        Company.DerivedCompanyIDName
                            label is "Company"
                        paragraph
                            PurchaseOrderImport
                            POCode
                    column2
                        visible when (PurchaseOrderImportExists)
                            RunGroup
                        LineNumber
                    column3
                        RecordType
