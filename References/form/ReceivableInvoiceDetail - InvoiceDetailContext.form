InvoiceDetailContext is a Form
    Layout
        four column distributed
            column1
                display as text
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                        visible when (IsNonBaseCurrency)
                            Company.Currency
                                label is "Currency"
                    paragraph
                        Customer.RepresentativeText
                    paragraph
                        visible when (DerivedMessage entered)
                            text of "Note:"
                                header4
                                bold
                                color of red
                            DerivedMessage
                                label is "_"
                                header4
                                bold
                                color of red
            column2
                paragraph
                    button of "<InvoiceDetailGroupField>"
                        link is ReceivableInvoiceNav
                        label is "Invoice"
                        header4
                        bold
                        display as link
                paragraph
                    DerivedDescription
                        display as text
            column3
                display as text
                    paragraph
                        TransactionDate
                        GeneralLedgerDate
                    paragraph
                        Status
                            display as tag
                                color of gray when (Status.Unreleased)
                                color of green when (Status.OpenTransaction)
                                color of gray
            column4
                display as text
                    paragraph
                        TransientSignedTransactionAmount
                            label is "InvoiceAmount"
                                header4
                                bold
                            header4
                            bold
                        visible when (TransientSignedOpenAmount entered)
                            TransientSignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of red
                                header4
                                bold
                                color of red
                            visible when (IsNonBaseCurrency)
                                OriginalCurrency
                                    label is "_"
                                    header4
                                    color of red
                        visible when (TransientSignedOpenAmount not entered)
                            TransientSignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of green
                                header4
                                bold
                                color of green
                            visible when (IsNonBaseCurrency)
                                OriginalCurrency
                                    label is "_"
                                    header4
                                    color of green
