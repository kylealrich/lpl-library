DepreciationRecalculation is an ActionForm
    action is DepreciationRecalculation
    Layout
        header2 of "SelectionOptions"
        paragraph
            FinanceEnterpriseGroup
            Release
                label is "Update"
        paragraph
            Book
                select is ActiveDepreciationBooks
            Book.Description
                no label
                display as text
        paragraph
            BegDate
                label is "FromInServiceDate"
            EndDate
                label is "ToInServiceDate"
        paragraph
            Company
                label is "Company"
                select is Companies
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
                select is CompanyGroups
        header2 of "AdditionalOptions"
        paragraph
            Simulated
            FullyDepr
                label is "FullyDepreciated"
            SpreadOverLifeRemaining
                label is "SpreadOverRemainingLife"
        paragraph
            Method
                select is DepreciationMethods
            Method.Description
                no label
                display as text
        paragraph
            Life
        paragraph
            Asset
                select is AllAssets
            Asset.Description
                no label
                display as text
        paragraph
            TagNbr.TagNumber
                label is "Tag"
            TagNbr
                label is "TagAsset"
                select is Tags
            TagNbr.Description
                no label
                display as text
        paragraph
            AssetGroup
                select is AssetGroups
            AssetGroup.Description
                no label
                display as text
        blank line
        paragraph
            PageBreak
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division.Description
                no label
                display as text
        single column
            AssetType
                label is "Type"
                compact format
                select is AssetTypesWithinCompany
        paragraph
            Category
        paragraph
            Property
            SeqOption
                label is "ReportSequence"
        header2 of "ReleaseOptions"
        two column
            column1
                DeprYtdOpt
                    label is "Year_toDateDepreciation"
                DeprLtdOpt
                    label is "Life_toDateDepreciation"
            column2
                RemLifeOpt
                    label is "RemainingLife"
                TableYearOpt
                    label is "TableYear"
        blank line
        two column
            column1
                DeprStartDate
                    label is "DepreciationStartDate"
            column2
                DeprEndDate
                    label is "DepreciationEndDate"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DepreciationRecalculationReport_RDG
            column2 of 25%
                DepreciationRecalculationReport_XPT
