CashingWithoutRemittanceForm is a Form
    Actions
        action is Accepted.Cash
            action icon is award
            hide when invalid
        action is Cashed.Uncash
            action icon is reject
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        RepresentativeText
                        Company.GeneralLedgerCompany.Currency
                    paragraph
                        MaturityDate
                    paragraph
                        BankEntity
                            label is "Bank"
                        BankEntity.BankName
                            no label
                            display as text
                    visible when (Status.Cashed)
                        paragraph
                            CashCode
                            CashCode.Description
                                no label
                    paragraph
                        BankTransactionCode
                column2
                    paragraph
                        CustomerRepresentativeText
                        Customer.PostalAddress.Municipality
                            no label
                        Customer.PostalAddress.PostalCode
                            no label
                    paragraph
                        TransactionAmount
                        OriginalCurrency
                            no label
                    paragraph
                        BankAccountNumber
                            label is "AccountNumber"
                    paragraph
                        PayerReference
                column3
                    paragraph
                        CustomerDraft
                            compact format
                    Status
                    RIBKey
                    paragraph
                        CashRate
