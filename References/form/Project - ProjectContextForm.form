ProjectContextForm is a Form
    title is "<FinanceEnterpriseGroup.ProjectLabel>"
    Layout
        visible when (InEnterpriseStructure)
            three column distributed
                column1
                    paragraph
                        DisplayProject
                            label is "<FinanceEnterpriseGroup.ProjectLabel>"
                            display as text
                        Description
                            display as text
                column2
                    ProjectType
                        label is "<FinanceEnterpriseGroup.ProjectLabel>Type"
                        display as text
                column3
                    paragraph
                        visible when (IsAchild)
                            DerivedParentDisplayProject
                                label is "Parent<FinanceEnterpriseGroup.ProjectLabel>"
                                display as text
                        visible when (HasParentContract)
                            paragraph
                                button of "<ParentDisplayContract>"
                                    link is ParentContract
                                    label is "ParentContract"
                                    display as link
                            StatusMessage
                                no label
                                display as tag
                                    color of yellow when (not Active)
                                    color of green when (Active)
        visible when (not InEnterpriseStructure)
            three column
                column1
                    paragraph
                        DisplayProject
                            label is "<FinanceEnterpriseGroup.ProjectLabel>"
                            display as text
                        Description
                            display as text
                column2
                    ProjectType
                        label is "<FinanceEnterpriseGroup.ProjectLabel>Type"
                        display as text
                column3
                    paragraph
                        visible when (IsAchild)
                            DerivedParentDisplayProject
                                label is "Parent<FinanceEnterpriseGroup.ProjectLabel>"
                                display as text
                        visible when (HasParentContract)
                            StatusMessage
                                no label
                                display as tag
                                    color of yellow when (not Active)
                                    color of green when (Active)
        visible when (false)
            single column
                ContextStructure
