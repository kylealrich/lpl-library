MTotals is a Form
    title is "Totals"
    Layout
        display as text
            two column distributed
                TotalChargeAmount
                TotalCreditAmount
                DiscountAmount
                StatementTotal
                TotalChargeCount
                TotalCreditCount
            single column
                AdHocTotal
                    label is "NonPOStatementAmount"
                AdHocTaxTotal
                    label is "NonPOStatementTaxAmount"
            visible when (not UninvoicedStatement)
                single column
                    TotalNumberOfChargesReleased
                    TotalNumberOfChargesClosed
                    TotalNumberOfChargesApproved
                    TotalValueOfChargesReleased
                    TotalValueOfChargesClosed
                    TotalValueOfChargesApproved
                    NumberOfPOChargesReleased
                    NumberOfPOChargesClosed
                    NumberOfPOChargesApproved
                    ValueOfPOChargesReleased
                    ValueOfPOChargesClosed
                    ValueOfPOChargesApproved
                    NumberOfAdHocChargesReleased
                    NumberOfAdHocChargesClosed
                    NumberOfAdHocChargesApproved
                    ValueOfAdHocChargesReleased
                    ValueOfAdHocChargesClosed
                    ValueOfAdHocChargesApproved
