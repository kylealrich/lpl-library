StatementLineSummaryByCategoryContextForm is a Form
    title is "StatementLinesByCategory"
    Layout
        three column distributed
            column1
                paragraph
                    BankStatement
                        label is "StatementNumber"
                        display as text
                    BankStatement.StatementDate
                        display as text
                paragraph
                    CashForecastPeriodAmountRel.CashForecast
                        display as text
                paragraph
                    CashTransactionCategory
                        display as text
                    Description
                        no label
                        display as text
            column2
                paragraph
                    CashManagementAccount
                        display as text
                    CashManagementAccount.Title
                        no label
                        display as text
                paragraph
                    CashForecastPeriodAmountRel.CashForecast.Description
                        display as text
            column3
                paragraph
                    StatementLineAmount
                        display as text
                paragraph
                    ForecastPeriodAmount
                        label is "ForecastAmount"
                        display as text
                paragraph
                    StatementToForecastDifference
                        label is "Difference"
                        display as text
