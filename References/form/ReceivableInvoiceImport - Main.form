Main is a Form
    Layout
        three column distributed
            paragraph
                Customer
                    select is CustomerContextCompanyCustomerSelectList
                Customer.Name
                    no label
                    display as text
            InterfacedCustomer
                label is "ExternalCustomer"
            Description
                label is "Description"
        three column distributed
            BatchNumber
            paragraph
                ReceivableProcessLevel
                    label is "ProcessLevel"
                    select is ProcessLevels
                ReceivableProcessLevel.Name
                    no label
                    display as text
            OpenOrHistoryStatus
                label is "Status"
        three column distributed
            GLStatus
                label is "GlobalLedgerStatus"
            ReceivableGeneralLedgerCode
                label is "AccountsReceivableCode"
                select is ARCodes
            ReasonCode
                label is "MemoReasonCode"
        three column distributed
            TransactionDate
            GeneralLedgerDate
                label is "PostDate"
            DueDate
        three column distributed
            InvoiceAmount.CurrencyAmount
            AppliedAmount
            AdjustAmount
        three column distributed
            OriginalCurrency
                label is "Currency"
            TermsCode
                select is TermsCodes
            CustomerBillTo
                label is "BillTo"
        three column distributed
            DiscDate
                label is "DiscountDate"
            DiscPct
                label is "DiscountPercent"
            DiscAmt
                label is "DiscountAmount"
        three column distributed
            paragraph
                InvoiceTypeCode
                    select is CustomerInvoiceTypeCodeList
                InvoiceTypeCode.Description
                    no label
                    display as text
            RegimeCode
            System
        three column distributed
            BankTransactionCode
                label is "PaymentCode"
                select is CashPayments
            SalesRepresentative
                select is SalesReps
            visible when (Company.UseEWayBillNumber)
                EWayBillNumber
        three column distributed
            LastFinanceChargeDate
            LastStatementDate
            CurrencyRateToCustomerGroupCurrency
                label is "CustomerGroupExchangeRate"
        three column distributed
            CurrencyMultiplicationOrDivision
                label is "CurrencyMutiplyDivide"
            CustomerGroupCurrencyMultiplicationOrDivision
                label is "GroupCurrencyMutiplyDivide"
            CurrencyDecimalsNumber
                label is "CurrencyDecimals"
        three column distributed
            XrefCompany
                label is "X\\RefCompany"
            XrefType
                label is "X\\RefType"
            XrefNbr
                label is "X\\RefNumber"
        three column distributed
            column1
                XrefPymtSeq
                    label is "X\\RefSequenceNumber"
            column2
                AutomaticCashApplication
                    label is "AutoApply"
                        left of field
            column3
                Project
        three column distributed
            CustomerPurchaseOrder
            OpenOrderAmount
            RevalueCurrencyTransactions
                label is "Revalue"
                    left of field
        three column distributed
            SummarizeDetail
                label is "SummarizeDetailForDisplay"
        visible when (Company.DetailedInvoiceAccrualDistributions)
            header2 of "DetailFinanceStructure"
            InvoiceFinanceCodeBlock
                label is "InvoiceAccrualAccount"
                compact format
        visible when (Company.UseIDM)
            header2 of "IDMOptions"
            three column distributed
                column1
                    paragraph
                        IDMPrinter
                            show up to 25 characters
                        IDMPrinter.Description
                            no label
                            display as text
                column2
                    visible when (OpenOrHistoryStatus.Open)
                        GenerateIDMDocument
                column3
                    blank line
