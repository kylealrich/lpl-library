        four column
            UNSPSCForSegmentRel.ShortDescription
                label is "Segment"
            visible when (FamilyEntered)
                UNSPSCForFamilyRel.ShortDescription
                    label is "Family"
            visible when (ClassEntered)
                UNSPSCForClassRel.ShortDescription
                    label is "Class"
            visible when (CommodityEntered)
                UNSPSCForCommodityRel.ShortDescription
                    label is "Commodity"
        header3 of "UsageDateRange"
