Question is a Form
    title is "LineQuestions"
    Layout
        single column
            SourcingEventLineQuestion.QuestionText
                label is number
                display as text
                use text area of 8 lines
            visible when (SourcingEventLineQuestion.HasAttachment)
                SourcingEventLineQuestion.Attachment.File
                    no label
            single column
                text of "<ConditionalAnswerLabel>"
                    italics
                    color of red
            SourcingEventLineQuestionAnswer
                label is "<SourcingEventLineQuestion.AnswerTextWithRequired>"
            visible when (SourcingEventLineQuestion.AllowResponseAttachment)
                visible when (not SourcingEventResponse.Status.Submitted)
                    Attachment.File
                        label is "<SourcingEventLineQuestion.AttachmentTextWithRequired>"
                visible when (SourcingEventResponse.Status.Submitted)
                    visible when (HasQuestionAnswerAttachment)
                        paragraph
                            Attachment.Title
                                label is "AnswerAttachment"
                                display as text
                            button of "View"
                                view Attachment.File
                                display as link
        blank line
