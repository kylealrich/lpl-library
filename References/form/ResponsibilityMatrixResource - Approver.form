Approver is a Form
    is primary
    title is "ApprovalLevel"
    Layout
        paragraph
            Approver
            Approver.SearchName
                no label
                display as text
            text of "-_Or_-"
            ApprovalTeam
            ApprovalTeam.Description
                no label
                display as text
            text of "-_Or_-"
            ApprovalPosition
            ApprovalPosition.Description
                no label
                display as text
        blank line
        header3 of "Threshold"
        paragraph
            ApprovalAmount
            ApprovalCurrency
                display only
        blank line
        header3 of "EscalationSettings"
        paragraph
            EscalationHours
                label is "EscalateAfter"
            text of "HoursTo"
            EscalateTo
                no label
        paragraph
            visible when (EscalateTo.SpecificApprovalLevel)
                EscalationApprovalLevel
                    label is "ApprovalLevelResource"
                    select is ApproversSelect
                visible when (EscalationApprovalLevelApproverEntered)
                    EscalationApprovalLevel.Approver.PreferredSimplePresentationName
                        label is "ApproverOf"
                        display as text
                visible when (EscalationApprovalLevelApprovalTeamEntered)
                    EscalationApprovalLevel.ApprovalTeam.Description
                        label is "ApprovalTeamOf"
                        display as text
                visible when (EscalationApprovalLevelPositionEntered)
                    EscalationApprovalLevel.ApprovalPosition.Description
                        label is "PositionOf"
                        display as text
            visible when (EscalateToNextLevel)
                DerivedApprovalLevelPlusOne
                    label is "ApprovalLevel"
                    display as text
                visible when (NextApprovalLevelApproverEntered)
                    DerivedNextApprovalLevelApprover
                        label is "ApproverOf"
                        display as text
                visible when (NextApprovalLevelApprovalTeamEntered)
                    DerivedNextApprovalLevelTeam
                        label is "ApprovalTeamOf"
                        display as text
                visible when (NextApprovalLevelPositionEntered)
                    DerivedNextApprovalLevelPosition
                        label is "PositionOf"
                        display as text
        blank line
        paragraph
            visible when (InvalidNextLevelEscalation)
                text of "<InvalidNextLevelEscalationMessage>"
                    bold
                    color of red
                    align as label
        paragraph
            visible when (InvalidSpecificLevelEscalation)
                text of "<InvalidSpecificLevelEscalationMessage>"
                    bold
                    color of red
                    align as label
        paragraph
            GlobalLedger
                label is "ManualJournal"
                when value changed
                    GlobalLedgerChanged =  true
                        when (DerivedGlobalLedger)
            Requisition
                when value changed
                    RequisitionChanged =  true
                        when (DerivedRequisition)
            PurchaseOrder
                when value changed
                    PurchaseOrderChanged =  true
                        when (DerivedPurchaseOrder)
            PayablesInvoice
                when value changed
                    PayablesInvoiceChanged =  true
                        when (DerivedPayablesInvoice)
            ContractManagement
                when value changed
                    ContractManagementChanged =  true
                        when (DerivedContractManagement)
            visible when (false)
                GlobalLedgerChanged
                RequisitionChanged
                PurchaseOrderChanged
                PayablesInvoiceChanged
                ContractManagementChanged
