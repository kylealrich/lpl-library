PurchasingClassFormContext is a Form
    Layout
        two column distributed
            column1
                paragraph
                    visible when (ItemGroup not entered)
                        ItemGroup
                            select is ItemGroups
                        ItemGroup.Description
                            no label
                            display as text
                    visible when (ItemGroup entered)
                        ItemGroup.ItemGroupDescription
                            label is "ItemGroup"
                            display as text
                paragraph
                    visible when (MajorClass entered)
                        MajorClass
                            display as text
                            select is ActiveMajorPurchasingClasses
                    visible when (MajorClass not entered)
                        MajorClass
                            select is ActiveMajorPurchasingClasses
                            show up to 10 characters
                    Description
            column2
                visible when (MajorClassExists)
                    ClassType
                        display as text
                Active
