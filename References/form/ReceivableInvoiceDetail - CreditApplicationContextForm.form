CreditApplicationContextForm is a Form
    title is "CreditApplication"
    Layout
        visible when (false)
            TransientIsolatedReceivableCompany
        display as text
            three column distributed
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                    visible when (IsNonBaseCurrency)
                        Company.Currency
                            no label
                paragraph
                    visible when (IsManualEntry)
                        button of "<BatchNumber>"
                            link is ReceivableInvoiceBatchNav
                            label is "Batch"
                            display as link
                    visible when (not IsManualEntry)
                        BatchNumber
                            label is "Batch"
                            display as text
                    button of "<ReceivableInvoiceDetail.Invoice>"
                        link is ReceivableInvoiceNav
                        label is "CreditMemo"
                        display as link
                    visible when (InvoiceDetailAllowSummarizeShowMain)
                        ReceivableInvoiceDetail.PaymentSeq
                            label is "Sequence"
                paragraph
                    Description
            three column distributed
                paragraph
                    Customer.RepresentativeText
                    text of "__"
                    ReceivableProcessLevel.RepresentativeText
                paragraph
                    TransactionDate
                    GeneralLedgerDate
                paragraph
                    DisplaySignedTransactionAmount
                    visible when (CreditMemoHasApplications)
                        DisplaySignedAppliedAmount
                            label is "Applied"
                    visible when (HasReceivableApplicationAdjustments)
                        DisplaySignedAdjustAmount
                            label is "Adjusted"
                    visible when (DerivedOpenAmount entered)
                        DerivedOpenAmount
                            label is "Open"
                                header4
                                bold
                                color of red
                            header4
                            bold
                            color of red
                        visible when (IsNonBaseCurrency)
                            OriginalCurrency
                                label is "_"
                                header4
                                color of red
                    visible when (DerivedOpenAmount not entered)
                        DerivedOpenAmount
                            label is "Open"
                                header4
                                bold
                                color of green
                            header4
                            bold
                            color of green
                        visible when (IsNonBaseCurrency)
                            OriginalCurrency
                                label is "_"
                                header4
                                color of green
