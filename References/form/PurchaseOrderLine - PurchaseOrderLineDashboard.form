PurchaseOrderLineDashboard is a CompositeForm
    title is "PurchaseOrder<PurchaseOrder>Line<LineNumber>"
    context form is PurchaseOrderLineDashboardContext
        background is theme color
    implements DashBoardView
        show context form on top
        use 12 column grid
    Actions
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Quantities is a Panel
        title is "Quantities_\\in<EnteredBuyUOM>"
        span 6 columns
        form is POLineQuantityDetailDashoboardForm
    Costs is a Panel
        span 6 columns
        form is POLineCostDashboardForm
    Invoices is a Panel
        title is "InvoiceDetails"
        visible when (HasInvoiceDetails)
        span 6 columns
        overview navigation is InvoicesNav
        list is PayablesInvoiceDetailsForPOLineRel.InvoiceDetailLinesCardList
    AddOnCharges is a Panel
        visible when (AddOnChargeExists)
        span 6 columns
        overview navigation is AddOnChargesNav
        list is PurchaseOrderAndLineAddOnCharge set.POLineAOCCardList
    Receipts is a Panel
        visible when (HasPOReceiptLines)
        span 6 columns
        overview navigation is ReceiptsNav
        list is PurchaseOrderReceiptLinesRel.LinesForPODashboardCardList
    Distributions is a Panel
        visible when (DistributionExists)
        span 6 columns
        overview navigation is DistributionsNav
        list is PurchaseOrderLineDistributionsRel.POLineDistributionCardList
    ReceiptAdjustments1 is a Panel
        title is "ReceiptAdjustments"
        visible when (NotCatchWeightAndHasAdjustments)
        span 12 columns
        overview navigation is ReceiptAdjustmentsNav
        list is AdjustmentLinesRel.ReceiptAdjustmentLines1
    ReceiptAdjustments2 is a Panel
        title is "ReceiptAdjustmentsCatchweight"
        visible when (CatchWeightAndHasAdjustments)
        span 12 columns
        overview navigation is ReceiptAdjustmentsNav
        list is AdjustmentLinesRel.ReceiptAdjustmentLines2
    ReceivingBuyerMessages is a Panel
        visible when (HasBuyerMessages)
        span 12 columns
        overview navigation is ViewBuyerMessagesNav
        list is BuyerMessagesRel.ReceivingBuyerMessages
    Inspections is a Panel
        visible when (InspectionsExist)
        span 12 columns
        overview navigation is InspectionsNav
        list is InspectionLinesRel.ReceiptInspectionLines
    VendorReturns is a Panel
        visible when (HasVendorReturnLines)
        span 6 columns
        overview navigation is VendorReturnsNav
        list is VendorReturnLinesRel.LinesForPODashboardCardList
    Tolerances is a Panel
        visible when (HasTolerances)
        span 6 columns
        form is PurchaseOrderLineTolerances
    SourceLines is a Panel
        visible when (HasSourceRecord)
        span 12 columns
        overview navigation is SourceLinesNav
        list is PurchaseOrderLineSourcesRel.PurchaseOrderLineSources
