CashForecast is a CompositeForm
    is primary
    title is "CashForecast"
    context form is CashForecastContextForm
        background is theme color
    Accounts is a Panel
        list is CashForecastAccount set.CashForecastAccountListDetail
            helper list is ActiveSecurityCashManagementAccountRel.CashManagementAccountHelper
                action is CreateForecastAccount
                    invoked.PrmCashManagementGroup = CashManagementGroup
                    invoked.PrmCashForecast = CashForecast
                valid when (not HaveBuiltForecast)
    Categories is a Panel
        list is CashForecastCategoryByDisplayOrderRel.CashForecastCategoryList
            helper list is CashTransactionCategoryRel.CashTransactionCategoryHelper
                action is CreateForecastCategory
                    invoked.PrmCashManagementGroup = CashManagementGroup
                    invoked.PrmCashForecast = CashForecast
                valid when (not HaveBuiltForecast)
    ApprovalComments is a Panel
        visible when (HasApprovalComments)
        list is CashForecastReasonCodeUsage set.CashForecastReasonCodeUsageList
    ApprovalHistory is a Panel
        visible when (HasWorkunit)
        form is ApprovalHistory
