MobileItemForm is a CompositeForm
    title is "<DerivedFormTitle>"
    context form is MobileItemContext
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Main is a Panel
        form is MobileMain
    Options is a Panel
        form is MobileOption
    ClassesAndCodes is a Panel
        form is MobileItemClassesAndCodes
