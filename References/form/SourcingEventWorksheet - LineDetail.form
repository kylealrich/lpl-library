LineDetail is a Form
    title is "Detail"
    Layout
        single column
            PurchaseOrderInterface.PurchaseOrderInterface.OperatingCompany
                label is "RequesterCompany"
                display as text
        two column
            PurchaseOrderInterface.PurchaseOrderInterface.SourceDocumentNumeric
                label is "Requisition"
                display as text
            PurchaseOrderInterface.PurchaseOrderInterface.LineNumber
                label is "Line"
                display as text
        two column
            ItemNumber
                label is "Item"
                display as text
            ItemDescription
                display as text
        single column
            PurchaseOrderInterface.ItemType
                display as text
        two column
            PurchaseOrderInterface.Quantity
                display as text
            EnteredUom
                label is "UnitOfMeasure"
                display as text
        single column
            PurchaseOrderInterface.EnteredUnitCost
                label is "UnitCost"
                display as text
        two column
            PurchaseOrderInterface.Requester
                display as text
            paragraph
                PurchaseOrderInterface.Requester.Employee.PresentationNameSnapshot
                    label is "RequesterName"
                    display as text
                visible when (RequesterEmailEntered)
                    button of "<PurchaseOrderInterface.Requester.EmailAddress>"
                        link is "mailto:<PurchaseOrderInterface.Requester.EmailAddress>"
                        display as link
        single column
            PurchaseOrderInterface.Requester.Employee.EmployeeWorkTelephone
                label is "RequesterPhone"
                display as text
        two column
            PurchaseOrderInterface.Buyer
                display as text
            paragraph
                PurchaseOrderInterface.Buyer.Employee.PresentationNameSnapshot
                    label is "BuyerName"
                    display as text
                visible when (BuyerEmailEntered)
                    button of "<PurchaseOrderInterface.Buyer.EmployeeWorkEmailAddress>"
                        link is "mailto:<PurchaseOrderInterface.Buyer.EmployeeWorkEmailAddress>"
                        display as link
        single column
            PurchaseOrderInterface.Buyer.Employee.EmployeeWorkTelephone
                label is "BuyerPhone"
                display as text
        single column
            PurchaseOrderInterface.Company
                label is "FromCompany"
                display as text
        two column
            Location
                label is "FromLocation"
                display as text
            PurchaseOrderInterface.ShipToLocation.Name
                label is "FromLocationName"
                display as text
        two column
            PurchaseOrderInterface.PurchaseOrderInterface.RequestingLocation
                display as text
            PurchaseOrderInterface.PurchaseOrderInterface.RequestingLocation.Name
                label is "RequestingLocationName"
                display as text
        two column
            PurchaseOrderInterface.RequestedDeliveryDate
                display as text
            PurchaseOrderInterface.LateDeliveryDate
                display as text
        single column
            ReqLineRel.Requisition.CreationDate
                display as text
            PurchaseOrderInterface.POCode
                label is "DefaultPOCode"
                display as text
            PurchaseOrderInterface.DeliverTo
                display as text
        two column
            PurchaseOrderInterface.CommodityCode
                display as text
            PurchaseOrderInterface.CommodityCode.CcDescription
                label is "CommodityCodeDescription"
                display as text
