MobileUpdateQuantity is an ActionForm
    action is MobileUpdate
    title is "EnterQuantity"
    Layout
        two column
            column1
                visible when (RecallProductItem.Item.UseLinkedImage)
                    RecallProductItem.Item.ImageURL
                        display as image
                visible when (not RecallProductItem.Item.UseLinkedImage)
                    RecallProductItem.Item.Picture.File
                        display as portrait image up to 3 lines
                            missing image is random background
                                foreground text is "<RecallProductItem.Item.ItemDescriptionAbbreviation>"
            column2
                RecallProductItem.Item.CardViewItemWithDescription
                    no label
                    display as text
        visible when (RecallProductItem.ManufacturerInformation.ManufacturerNumber entered)
            single column
                RecallProductItem.ManufacturerInformation.ManufacturerNumber
                    display as text
        visible when (RecallGroup.EnterQuantitiesByLocation)
            three column distributed
                InventoryLocation
                    label is "InventoryLocation"
                RequestingLocation
                    label is "RequestingLocation"
        visible when (RecallNoticeTask.AllowQuantityUpdates)
            two column distributed
                column1
                    QuantityIdentified
                        label is "QuantityFound"
                    ZeroQuantityFound
                column2
                    Uom
        visible when (not RecallNoticeTask.AllowQuantityUpdates)
            two column distributed
                column1
                    QuantityIdentified
                        label is "QuantityFound"
                        display as text
                    ZeroQuantityFound
                        display as text
                column2
                    Uom
                        display as text
