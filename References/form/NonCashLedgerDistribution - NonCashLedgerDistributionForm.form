NonCashLedgerDistributionForm is a Form
    is primary
    title is "ReconciliationVarianceDistributions"
    Layout
        paragraph
            CashManagementAccount
                display as text
            CashManagementAccount.Title
                no label
                display as text
        three column
            BankStatement
                display as text
            BankStatement.StatementDate
                display as text
            NonCashLedgerTransaction.TransactionNumber
                display as text
        three column
            paragraph
                NonCashLedgerTransaction.TransactionAmount
                    label is "Amount"
                    display as text
                NonCashLedgerTransaction.DebitCreditIndicator
                    no label
                    display as text
            NonCashLedgerTransaction.ReconciledAmount
                display as text
            NonCashLedgerTransaction.ReconciliationVariance
                display as text
        blank line
        single column
            GLFinanceCodeBlock
                label is "FinanceCodeBlock"
                compact format
            GLTransactionAmount
                label is "TransactionAmount"
            Status
                display as text
            Comment
                use text area of 3 lines
