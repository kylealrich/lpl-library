PutawayActionForm is an ActionForm
    action is PutawayItem
    title is "PutawayItem<PrmItem.Item>"
    Layout
        header2 of "Quantities"
        display as text
            two column distributed
                column1
                    EnteredReceivedQuantity
                        label is "Received"
                        display 1 decimals
                    DerivedRemainingPutawayQuantity
                        label is "Remaining"
                        mouse over text is "RemainingQuantity_to_bePutAway"
                        display 1 decimals
                column2
                    ReceivedUOM
                        label is "UOM"
        single column
            visible when (not IsDMCatchWeightItemOrSerialRequiredAtReceipt)
                PrmQuantity
                    label is "PutAway"
                    display 1 decimals
                    display as required
        two column distributed
            visible when (IsDMCatchWeightItemAndNotSerialRequiredAtReceipt)
                column1
                    PrmSecondaryQuantity
                        label is "PutAway"
                        display 1 decimals
                        display as required
                column2
                    ReceivedUOM
                        label is "UOM"
                        display as text
        two column distributed
            visible when (IsDMCatchWeightItemAndNotSerialRequiredAtReceipt)
                column1
                    PrmQuantity
                        label is "Catchweight_Quantity"
                        display 1 decimals
                        display as required
                column2
                    Item.StockUOM
                        label is "UOM"
                        display as text
        header2 of "Details"
        single column
            visible when (IsLotRequiredAtReceipt)
                PrmLot
                    label is "Lot"
                    show up to 16 characters
                    display as required
                    when value changed
                        PrmShelfLife =  PrmLot.ShelfLife
                        PrmManufacturingDate =  PrmLot.ManufacturingDate
                        PrmLotOnHold =  PrmLot.LotOnHold
                        refresh PrmShelfLife
                        refresh PrmManufacturingDate
                        refresh PrmLotOnHold
            visible when (IsSerialRequiredAtReceipt)
                PrmSerial
                    label is "Serial"
                    show up to 16 characters
                    display as required
            visible when (IsLotRequiredAtReceipt)
                PrmSublot
                    label is "Sublot"
                    show up to 16 characters
            visible when (IsAWarehouseLocationItem)
                PrmBin
                    label is "Bin"
                    select is PutawaySelectList
                    show up to 12 characters
                    display as required when (IsBinTracked)
        two column distributed
            column1
                visible when (IsBinTrackedAndLotTrackedWarehouseItem)
                    PrmManufacturingDate
                        label is "ManufacturingDate"
            column2
                visible when (IsBinTrackedAndLotTrackedWarehouseItem)
                    PrmShelfLife
                        label is "ShelfLife"
                        when value changed
                            PrmLotExpirationDate =  (PrmManufacturingDate + PrmShelfLife)
                                when (PrmShelfLife entered)
        paragraph
            visible when (IsLotRequiredAtReceipt)
                PrmLotExpirationDate
                    label is "ExpirationDate"
        single column
            visible when (IsLotRequiredAtReceipt)
                PrmLotOnHold
                    label is "LotOnHold"
