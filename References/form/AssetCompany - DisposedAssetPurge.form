    action is DisposedAssetsPurge
    Layout
        header2 of "SelectionOptions"
        single column
            PrmFinanceEnterpriseGroup
            PrmRelease
                label is "Update"
        paragraph
            PrmAsset
                select is AllAssets
            PrmAsset.Description
                no label
                display as text
        paragraph
            PrmFromDate
                label is "OrDisposalDate-From"
            PrmToDate
                label is "To"
        paragraph
            PrmCompany
                select is Companies
            text of "Or"
            PrmCompanyGroup
                select is CompanyGroups
        paragraph
            PrmLeaseCompany
                label is "Company"
                select is Companies
            PrmLease
                label is "Lease"
        paragraph
            PrmLocationName
            PrmDivision
                select is Divisions
        single column
            PrmAssetGroup
                select is AssetGroups
        header2 of "OutputOptions"
        paragraph
            PrmLeaseOption
            PrmLocationOption
        paragraph
            PrmDivisionOption
            PrmAssetGroupOption
