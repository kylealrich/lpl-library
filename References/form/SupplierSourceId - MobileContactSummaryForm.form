MobileContactSummaryForm is a Form
    title is "EditProfile"
    restrict action Create
    restrict action NewContact
    restrict action SupplierUpdate
    restrict action CreateVendorLocation
    restrict action BuyerCreateContacts
    restrict action Delete
    restrict action ActivateSupplierContact
    restrict action InactivateSupplierContact
    restrict action InactivateContact
    restrict action EmailToSupplierContacts
    restrict action AttachToEventAsPlanHolder
    restrict action AttachToEvent
    restrict action ForgotUserName
    restrict action UpdateSupplierPortalInformation
    restrict action UpdateContactBankCountry
    restrict action UpdateContactBankInformation
    restrict action UpdateSupplierBankCountry
    restrict action UpdateSupplierBankInformation
    restrict action MobileUpdateContactBankInformation
    restrict action MobileUpdateSupplierBankInformation
    Actions
        action is save and close
            action icon is save
            label is "_"
            hide when invalid
    Layout
        visible when (not actor.agent(SupplierSourceId).InactiveAtSomeLevel)
            single column
                Picture.File
                    display as portrait image up to 5 lines
                MainContact.GivenName
                    label is "FirstName"
                MainContact.FamilyName
                    label is "LastName"
                ContactTitle
                    label is "Title"
                EmailAddress
                    label is "Email"
                ReceiveEmailNotification
            header3 of "_"
            paragraph
                TelephoneNumber
            paragraph
                MobilePhone
            paragraph
                FaxNumber
            visible when (LocationAddressExists)
                header3 of "AddressInformation"
                LocationAddress
                    form is PostalAddressShortRequired
                visible when (SupplierGroup.DisplayTypeForRegistration)
                    LocationAddress.Type
        visible when (actor.agent(SupplierSourceId).InactiveAtSomeLevel)
            display as text
                single column
                    Picture.File
                        display as portrait image up to 5 lines
                    MainContact.FirstAndLastName
                        label is "Name"
                    ContactTitle
                        label is "Title"
                    EmailAddress
                    visible when (SupplierGroup.RequireEmailConfirmation)
                        single column
                            ConfirmEmailAddress
                                label is "*_ConfirmEmailAddress"
                    ReceiveEmailNotification
                header3 of "_"
                paragraph
                    TelephoneNumber
                paragraph
                    MobilePhone
                paragraph
                    FaxNumber
                visible when (LocationAddressExists)
                    header3 of "AddressInformation"
                    LocationAddress
                        form is PostalAddressShortRequired
                    visible when (SupplierGroup.DisplayTypeForRegistration)
                        LocationAddress.Type
