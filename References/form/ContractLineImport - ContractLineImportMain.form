ContractLineImportMain is a Form
    title is "ContractLineImport"
    Layout
        visible when (not ContractImport.ServicePurchaseType)
            paragraph
                ItemNumber
                    label is "Item"
                ItemType
        paragraph
            ItemDescription
                label is "ItemDescription"
            ItemDescription2
                no label
            ServiceCode
        visible when (not ContractImport.ServicePurchaseType)
            single column
                ItemDescription3
                    label is "LongItemDescription"
                    use text area of 2 lines
            visible when (ItemType.Special)
                visible when (ManualItemNumbering)
                    paragraph
                        ManualItemNumber
            paragraph
                visible when (CannotUpdateGPO)
                    VendorItem
                        display as text
                visible when (not CannotUpdateGPO)
                    VendorItem
                visible when (UpdatedOrMismatchedVendorItem)
                    ContractVendorItem
                        display as text
                VendorItemDescription
            paragraph
                GlobalTradeItemNumber
                GlobalTradeItemNumber.FullDescription
                    label is "GTINDescription"
                    display as text
        paragraph
            visible when (CannotUpdateGPO)
                BaseCost
                    display as text
            visible when (not CannotUpdateGPO)
                BaseCost
            visible when (not ContractImport.ServicePurchaseType)
                CostOption
        paragraph
            visible when (CannotUpdateGPO)
                UOM
                    display as text
                UOMConversion
                    display as text
            visible when (not CannotUpdateGPO)
                UOM
                UOMConversion
            visible when (not ItemType.Itemmast)
                LowUOMCode
                    label is "LowUnitOfMeasure"
            visible when (ItemType.Itemmast)
                visible when (UOMIsStock)
                    ItemNumber.UOMConversion
                        label is "ItemMasterUnitOfUseConversion"
                        display as text
                visible when (not UOMIsStock)
                    ItemUOMRel.UOMConversion
                        label is "UnitOfMeasureConversion"
                        display as text
                    ItemNumber.UOMConversion
                        label is "ItemMasterUnitOfUseConversion"
                        display as text
                ItemNumber.StockUOM
                    display as text
            GPOUnitOfMeasure
                display as text
        two column
            EffectiveDate
                label is "CurrentEffectiveDate"
            ExpirationDate
                label is "CurrentExpirationDate"
        visible when (not ContractImport.ServicePurchaseType)
            two column
                ManufacturerInformation.Manufacturer
                    label is "ManufacturerCode"
                    compact format
                visible when (CannotUpdateGPO)
                    ManufacturerInformation.ManufacturerNumber
                        display as text
                visible when (not CannotUpdateGPO)
                    ManufacturerInformation.ManufacturerNumber
            two column
                visible when (DifferentManufacturerInformation)
                    ContractManufacturerInformation.Manufacturer
                        label is "ContractManufacturerCode"
                        display as text
                        compact format
                    ContractManufacturerInformation.ManufacturerNumber
                        label is "ContractManufacturerNumber"
                        display as text
        visible when (not ItemExists)
            paragraph
                CommodityCode
                    compact format
                    select is CommodityCodeSelect
                CommodityCode.Description
                    no label
                    display as text
        visible when (ItemExists)
            paragraph
                CommodityCode
                    display as text
                    compact format
                CommodityCode.Description
                    no label
                    display as text
        two column
            UNSPSCCode
                label is "GPO_UNSPSC"
            visible when (ItemExists)
                ItemNumber.UNSPSCCode
                    label is "ItemUNSPSC"
                    display as text
                    compact format
        visible when (IsHSNSACCodeEnabled)
            paragraph
                HSNSACCode
                HSNSACCode.Description
                    no label
                    display as text
        paragraph
            LifetimeMaximumQuantity
            visible when (ContractImport.StandingPurchaseType)
                Quantity
                    label is "StandingQuantity"
        visible when (ContractImport.ServicePurchaseType)
            paragraph
                LifetimeMaximumAmount
                    display as text
                visible when (AmountTypeServiceItem)
                    text of "LifetimeMaximumAmountIsEqualToBaseCostForAmountTypeService"
                        italics
                visible when (QuantityTypeServiceItem)
                    text of "LifetimeMaximumAmountIsEqualToBaseCostTimesLifetimeMaximumQuantityForQuantityTypeService"
                        italics
        visible when (not ContractLineExists)
            paragraph
                DefaultAccount
                    compact format
            visible when (not ContractImport.ServicePurchaseType)
                single column
                    PayablesDistributionCode
                        select is DistributionCodesByPercentage
            visible when (ContractImport.ServicePurchaseType)
                single column
                    PayablesDistributionCode
                        select is DistributionCodesForServiceContracts
        paragraph
            visible when (ContractImport.BlanketOrStanding)
                BlanketStandingRequestingLocation
        paragraph
            Priority
        single column
            ContractImport.ContractType.PurchaseType
                display as text
