MainForm is a Form
    title is "Main"
    Layout
        two column
            visible when (not AccountExists)
                ChartSection
            visible when (AccountExists)
                ChartSection
                    display only
        three column
            AccountType
                label is "<FinanceEnterpriseGroup.AccountLabel>Type"
            AccountSubType
                label is "SubType"
            AccountSubType.Description
                label is "SubTypeDescription"
                display only
        three column
            visible when (FinanceEnterpriseGroup.UseSubAccounts)
                ValidSubAccounts
            visible when (MissingMajorAccount)
                CreateMajorChartAccount
                    label is "CreateMajorChart<FinanceEnterpriseGroup.AccountLabel>"
            visible when (MissingSubAccounts)
                button of "CreatePostingAccounts"
                    action is CreateSubAccounts
        single column
            text of "AddToChartsWhereThis<FinanceEnterpriseGroup.AccountLabel>Exists"
                bold
                align as label
            LikeChartAccount
                label is "<FinanceEnterpriseGroup.AccountLabel>InChart"
        two column
            effective date
            has future changes
                label is "FutureChanges"
        single column
            SystemAccount
                label is "System<FinanceEnterpriseGroup.AccountLabel>"
            AllowUnits
            NaturalBalance
            SystemRestriction
            RequireProject
                label is "Require_<FinanceEnterpriseGroup.ProjectLabel>"
        two column
            TranslationCode
            TranslationCode.Description
                no label
                display as text
        single column
            Revalue
            XbrlTag
            Currency
            InterfaceInDetail
            IsReconcilable
