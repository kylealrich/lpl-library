UX1ReviewTransactionContextForm is a Form
    title is "ReviewTransaction"
    Layout
        display as text
            four column distributed
                column1
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                        visible when (IsNonBaseCurrency)
                            Company.Currency
                                label is "Currency"
                    Customer.RepresentativeText
                column2
                    paragraph
                        BatchNumber
                            label is "Batch"
                        ReceivableProcessLevel.RepresentativeText
                    paragraph
                        ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                            label is "Type"
                        ReceivableInvoiceDetail.Invoice
                        ReceivableInvoiceDetail.PaymentSeq
                            label is "Sequence"
                column3
                    paragraph
                        TransientSignedTransactionAmount
                            label is "TransactionAmount"
                    paragraph
                        ApplicationAmount.CurrencyAmount
                            label is "Applied"
                        AdjustmentAmount.CurrencyAmount
                            label is "Adjusted"
                        visible when (TransientUnsignedOpenAmount entered)
                            TransientUnsignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of red
                                header4
                                color of red
                            OriginalCurrency
                                label is "_"
                                header4
                                color of red
                        visible when (TransientUnsignedOpenAmount not entered)
                            TransientUnsignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of green
                                header4
                                color of green
                            OriginalCurrency
                                label is "_"
                                header4
                                color of green
                column4
                    Status
                        display as tag
                            color of gray when (Status.Unreleased)
                            color of green when (Status.OpenTransaction)
                            color of gray
                    paragraph
                        TransactionDate
                        GeneralLedgerDate
