CreateOptionalComponent is an ActionForm
    action is CreateOptionalComponent
    Layout
        paragraph
            PrmOptionalSequence
                label is "OptionalSequence"
        paragraph
            PrmComponent
                label is "Component"
            PrmComponent.Description
                no label
                display as text
            PrmComponent.Description2
                no label
                display as text
        valid when (KitItem.MakeCode.MakeToStock)
            paragraph
                InvLocation
                InvLocation.Name
                    no label
                    display as text
        single column
            PrmQuantity
                label is "Quantity"
        paragraph
            PrmStartDate
                label is "StartDate"
            PrmStopDate
                label is "StopDate"
