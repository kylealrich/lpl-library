RequestEmployeeForProject is an ActionForm
    action is RequestEmployeeForProject
    Layout
        visible when (not actor.initiator)
            display as text
                single column
                    RequestedBy
                two column table
                    column1
                        button of "<RequesterEmail>"
                            link is "mailto:<RequesterEmail>"
                            label is "Email"
                            display as link
                        NeededBy
                    column2
                        button of "<RequesterPhone.SubscriberNumber>"
                            link is "tel:<RequesterPhone.SubscriberNumber>"
                            label is "Phone"
                            display as link
                        RequestPriority
                            label is "Priority"
                            display as tag
                                color of red when (RequestPriority.High)
                                color of yellow when (RequestPriority.Medium)
                                color of green when (RequestPriority.Low)
        visible when (actor.initiator)
            two column table
                column1 of 50%
                    RequestPriority
                        label is "Priority"
                column2 of 50%
                    NeededBy
        header2 of "ActionComment"
        single column
            action comment
                no label
                use text area
        two column
            column1
                Project
                    label is "<FinanceEnterpriseGroup.ProjectLabel>"
                    display as text
            column2
                Description
                    no label
                    display as text
        two column
            column1
                visible when (actor.initiator)
                    ProjectEmployee
                        label is "EmploymentI\\D"
                visible when (not actor.initiator)
                    ProjectEmployee
                        label is "EmploymentI\\D"
                        display as text
            column2
                ProjectEmployee.Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
        visible when (not ProjectEmployee.ExcludeFromLabor)
            two column
                ProjectEmployee.ProjectLaborSchedule
                    display as text
                ProjectEmployee.ProjectLaborSchedule.Description
                    no label
                    display as text
        two column
            column1
                ProjectRole
                    label is "Role"
                    select is ProjectRolesSelect
            column2
                ProjectRole.Description
                    no label
                    display as text
        two column
            column1
                AssignmentDateRange.BeginDate
                    label is "BeginDate"
            column2
                AssignmentDateRange.EndDate
                    label is "EndDate"
        two column
            visible when (not ProjectEmployee.ExcludeFromLabor)
                CommittedEffort
            BillableRate
        visible when (not ProjectEmployee.ExcludeFromLabor)
            single column
                FinanceCodeBlock
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                FinanceCodeBlockSetBlanks
                    no label
            visible when (not FringeBurden.No)
                three column
                    column1
                        BurdenCode
                    column2
                        BurdenCode.Description
                            no label
                            display as text
                    column3
                        BurdenCode.Rate
                            display as text
                single column
                    BurdenCodeBlock
                        compact format
                    text of "DimensionsSetToBlank:"
                        align as label
                    BurdenCodeBlockSetBlanks
                        no label
                visible when (ProjectEmployee.FringeEncumbrance)
                    single column
                        FringeEncumbranceCodeBlock
                            compact format
        header2 of "Comments"
        single column
            NewSubject
                label is "Subject"
            NewComment
                label is "Comment"
                use text area of 3 lines
            NewFrom
                label is "CommentMadeBy"
            NewCommentDate
                label is "Date"
            NewDocumentURL
                label is "DocumentURL"
