MobileLineOptions is a Form
    title is "LineOptions"
    Layout
        single column
            Buyer
            Buyer.Employee.PresentationNameSnapshot
                label is "BuyerName"
                display as text
            ShipToLocation
                label is "ShipTo"
            RequestedDeliveryDate
                label is "RequestedDeliveryDate"
            Contract
            Vendor
            Vendor.VendorName
                label is "VendorName"
                display as text
            PurchaseFromLocation
                select is ActivePurchaseFromLocations
            VendorItem
            DeliverTo
                display as text
        header3 of "DropshipInformation"
        single column
            Dropship
                display as text
            DropshipAddress
            DropshipName
                display as text
            DropshipContact
                display as text
            DropshipPhoneNumber
