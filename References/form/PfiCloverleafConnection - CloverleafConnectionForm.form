CloverleafConnectionForm is a Form
    title is "CloverleafConnection"
    Layout
        single column
            PfiConfiguration
                label is "ConfigurationName"
            PfiCloverleafConnection
        two column
            MessageEncoding
                label is "MessageEncoding"
            visible when (not MessageEncoding.USASCII)
                UseByteOrderMark
        single column
            Protocol
                label is "Protocol"
        blank line
        header2 of "ProtocolInformation"
        visible when (Protocol.Tcpip)
            single column
                TcpipHost
                    label is "Host"
                TcpipPort
                    label is "Port"
                TcpipSocketTimeout
                    label is "SocketTimeout(milliseconds)"
            header1 of "MessageLengthIndicator"
            two column
                TcpipIndicatorLength
                    label is "LengthOfIndicatorField"
                TcpipIndicatorJustify
                    label is "Justification"
                TcpipIndicatorFill
                    label is "FillCharacter"
                TcpipLengthCalc
                    label is "LengthCalculations"
