Main is a Form
    Layout
        two column
            visible when (not VendorReturnExists)
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
            paragraph
                ReturnFromLocation
                    show up to 12 characters
                    display as required when (ReturnFromLocationRequired)
                ReturnFromLocation.Name
                    no label
                    display as text
        two column distributed
            paragraph
                Vendor
                    display as required when (VendorRequired)
                Vendor.VendorName
                    no label
                    display as text
            UserId
                label is "CreatedBy"
                display as text
        two column distributed
            ReferenceNumber
            paragraph
                ReasonCode
                ReasonCode.Description
                    no label
                    display as text
        two column distributed
            paragraph
                ReplacementPurchaseOrderBuyer
                    label is "Buyer"
                    display as required when (ReplaceGoods)
                ReplacementPurchaseOrderBuyer.Employee.PresentationNameSnapshot
                    no label
                    display as text
            ReplacementPurchaseOrder.PurchaseOrder
                label is "ReplacementPurchaseOrder"
                display as text
        two column distributed
            paragraph
                VendorReturnPOCode
                VendorReturnPOCode.Description
                    no label
                    display as text
            CreditReceived
