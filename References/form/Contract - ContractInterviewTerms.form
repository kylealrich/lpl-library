ContractInterviewTerms is a Form
    title is "ContractTerms"
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        single column
            text of "IfYouAreFinishedAnsweringTheQuestions,ClickTheButtonBelowToGenerateTheTermsAndConditionsForTheContract.ClickPreviousToGoBackAndChangeAnswersToQuestions."
                bold
            blank line
            text of "TheNumberOfRequiredQuestionsThatAreNotAnsweredIs<NumberOfAllUnansweredRequiredQuestions>"
                bold
        single column
            text of "TheNumberOfQuestionsThatAreMissingRequiredAttachmentsIs<NumberOfAllQuestionsMissingRequiredAttachments>"
                bold
        single column
            text of "TheNumberOfRequiredQuestionsThatAreAnsweredIncorrectlyIs<NumberOfAllIncorrectlyAnsweredQuestions>"
                bold
        paragraph
            button of "ViewQuestionsWhichNeedAttention"
                visible when (QuestionsRequireAttention)
                link is QuestionsLink
        single column
            button of "CreateContractTerms"
                valid when (CreateTermsNeeded)
                action is Draft.CreateContractTerms
