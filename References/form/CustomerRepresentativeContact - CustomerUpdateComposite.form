CustomerUpdateComposite is a CompositeForm
    title is "AccountInformation"
    context form is CustomerUpdateContext
        background is theme color
    show panel control on left
    Actions
        action is save
    MyContactInformation is a Panel
        form is ContactSummaryForm
    MyCustomerAddress is a Panel
        form is CustomerAddress
    MyQuestions is a Panel
        visible when (PrimaryQuestionResponse)
        template is CustomerGroup.ActiveCustomerGroupQuestionRel
            business class is CustomerRepresentativeQuestionResponse
                form is CustomerQuestionResponse
    MyContacts is a Panel
        visible when (IsPrimary)
        list is CustomerRepresentative.CustomerRepresentativeContact set.CustomerContactCreateUpdate
