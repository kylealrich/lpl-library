SalesClassAccounts is a Form
    is primary
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            BillingItemGeneralLedgerAccount.BillingProcessLevel
                label is "ProcessLevel"
            BillingItemGeneralLedgerAccount.BillingProcessLevel.Name
                no label
                display as text
        paragraph
            BillingItemGeneralLedgerAccount.MajorSalesClass
                show up to 10 characters
            MajorClassRel.Description
                no label
                display as text
        paragraph
            BillingItemGeneralLedgerAccount.MinorSalesClass
                show up to 10 characters
            MinorClassRel.Description
                no label
                display as text
        blank line
        single column
            header2 of "Accounts"
            SalesAccount
                compact format
            COGSAccount
                label is "CostOfGoods"
                compact format
            ExpenseAccount
                label is "CostOfGoodsOffset"
                compact format
            VarianceAccount
                label is "CostOfGoodsVariance"
                compact format
        blank line
        single column
            header2 of "TargetProfit"
        paragraph
            ProfitMargin
                label is "Margin"
        paragraph
            ProfitMarginHoldCode
                label is "HoldCode"
                select is HoldCodes
            ProfitMarginHoldCode.Description
                no label
                display as text
