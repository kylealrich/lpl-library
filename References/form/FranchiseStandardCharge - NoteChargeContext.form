NoteChargeContext is a Form
    Layout
        three column distributed
            column1
                visible when (RecordExists)
                    DerivedChargeType
                        label is "Type"
                        display as text
                visible when (not RecordExists)
                    paragraph
                        Company
                        Company.BillingCompany.Name
                            no label
                visible when (RecordExists)
                    paragraph
                        Company.BillingCompany.RepresentativeText
                            display as text
            column2
                paragraph
                    text of "_"
                paragraph
                    visible when (not RecordExists)
                        paragraph
                            FranchiseStandardCharge.Charge
                                label is "Charge"
                            Description
                    visible when (RecordExists)
                        paragraph
                            FranchiseStandardCharge.Charge
                                label is "Charge"
                                display as text
                            Description
            column3
                visible when (RecordExists)
                    ActiveStatus
                        label is "Status"
                        display as tag
                            color of gray when (not Active)
                            color of green when (Active)
                paragraph
                    visible when (not RecordExists)
                        paragraph
                            FranchiseStandardCharge.Currency
                                label is "Currency"
                    visible when (RecordExists)
                        paragraph
                            FranchiseStandardCharge.Currency
                                label is "Currency"
                                display as text
