SubcontractorCommentForm is a Form
    is primary
    title is "SubcontractorComment"
    Layout
        paragraph
            SupplierGroup
            SupplierGroup.Description
                no label
                display as text
        paragraph
            Subcontractor
            Subcontractor.SubcontractorName
                no label
                display as text
        single column
            Title
            Comment
                use text area
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
