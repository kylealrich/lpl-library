PortalPayablesInvoiceDetail is a Form
    title is "InvoiceDetail"
    Layout
        header2 of "InvoiceInformation"
        display as text
            two column distributed
                column1
                    PayablesInvoice.Company
                    PayablesInvoice.Vendor
                    PayablesInvoice.Invoice
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                column2
                    PayablesInvoice.Company.Name
                        label is "CompanyName"
                    PayablesInvoice.Vendor.VendorName
                        label is "VendorName"
                    PayablesInvoice.Status
                    button of "ViewImage"
                        visible when (PayablesInvoice.InvoiceImageEntered)
                        view PayablesInvoice.PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
        single column
            blank line
        header2 of "InvoiceDetailInformation"
        two column distributed
            column1
                PurchaseOrder.DisplayDocumentNumber
                    label is "PurchaseOrder"
                    display as text
                PurchaseOrderReceipt
                    label is "ReceiptNumber"
                    display as text
                Item
                    display as text
                ItemType
                    display as text
                VendorItem
                    display as text
            column2
                PurchaseOrderLine
                    label is "LineNumber"
                    display as text
                PurchaseOrderReceiptLine
                    label is "ReceiptLine"
                    display as text
                ItemDescription
                    label is "ItemDescription"
                    display as text
                blank line
                VendorItem.VendorItemDescription
                    label is "VendorItemDescription"
                    display as text
        paragraph
            EnteredQuantity
                display as text
            EnteredUOM
                display as text
            EnteredUnitCost
                display as text
            EnteredUOMMultiplier
                display as text
            TotalDistributionAmount
                display as text
        header2 of "TaxInformation"
        paragraph
            TaxCode
            TaxCode.Description
                no label
                display as text
            visible when (not OneSourceGeneric)
                EntityTaxCodeRel.AccruedOrInvoiced
                    label is "TaxType"
                    display as text
            TaxAmount
                display as text
