GLColumnContext is a Form
    title is "G\\LColumn"
    Layout
        four column independent
            column1
                paragraph
                    GLColumnType
                        label is "ColumnType"
                        show up to 30 characters
            column2
                paragraph
                    ColumnName
                        show up to 30 characters
                        display as required
            column3
                paragraph
                    visible when (not GLColumnType.Blank)
                        AlternateColumnName
                            label is "AlternateColumnName"
                            show up to 30 characters
            column4
                paragraph
                    visible when (GLColumnView.ShowGroupHeader)
                        ColumnGroupHeader
                            label is "GroupHeader"
                            show up to 30 characters
        single column independent
            paragraph
                visible when (GLColumnType.Standard)
                    ColumnValue
                        show up to 20 characters
                ColumnSize
                visible when (not GLColumnView.ShowGroupHeader)
                    OffsetPadding
                NumberOfDecimals
                visible when (GLColumnType.Blank)
                    ShowColumnHeader
        single column independent
            visible when (not GLColumnType.Blank)
                paragraph
                    visible when (GLColumnType.Standard)
                        ShowColumnOnReport
                            label is "ShowColumnOnReport"
                    ShowColumnHeader
                    ShowAsPercentage
                    SuppressCommas
                    visible when (not DerivedIsInsertRowDimensionValid)
                        InsertRowDimension
                            display only
                    visible when (DerivedIsInsertRowDimensionValid)
                        InsertRowDimension
        single column independent
            paragraph
                FormatHeader
                visible when (not FormatHeader)
                    HeaderAlignment
                        label is "HeaderTextAlignment"
                        display only
                visible when (FormatHeader)
                    HeaderAlignment
                        label is "HeaderTextAlignment"
                visible when (not FormatHeader)
                    Bold
                        display only
                visible when (FormatHeader)
                    Bold
                visible when (not FormatHeader)
                    Italics
                        display only
                visible when (FormatHeader)
                    Italics
        two column
            column1
                button of "Wizard"
                    visible when (ValidForCalculation)
                    action is CreateCalculation
            column2
                visible when (ValidForCalculation)
                    ColumnExpression
                        label is "Calculation"
                        display as text
        single column
            visible when (NotValidForCalculation)
                text of "GLColumnViewMustHaveAtleastTwoStandardTypeColumnsForCalculatedColumn"
                    color of red
