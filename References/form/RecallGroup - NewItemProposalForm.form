NewItemProposalForm is a Form
    title is "DefaultsForNewItemProposals"
    Layout
        header2 of "NewItemProposalCreation"
        paragraph
            DefaultItemProposalCoordinator
                label is "Coordinator"
                select is RecallCoordinatorList
            DefaultItemProposalCoordinator.Employee.FirstLastName
                no label
                display as text
            AllowItemProposalOverride
        single column
            DefaultItemProposalType
                label is "Type"
                select is RecallTypesForItemProposal
            ItemProposalQuestions
                label is "Instructions_andQuestions"
                select is ItemProposalTaskInstructions
        header2 of "AutomaticReviewCreation"
        single column
            text of "IfReviewerIsEntered,NewItemProposalReviewWillBeCreatedWhenNewItemProposalIsSubmitted."
                italics
        paragraph
            DefaultItemProposalReviewer
                label is "Reviewer"
                select is ItemReviewerList
            DefaultItemProposalReviewer.Employee.FirstLastName
                no label
                display as text
        single column
            ItemProposalReviewNumberOfDays
                label is "Number_ofDays_toReview"
            DefaultItemProposalInstructions
                label is "Instructions"
                select is ItemProposalTaskInstructions
        paragraph
            text of "AllowSpreadsheetToBeAttachedForMultipleItems"
            AllowItemProposalSpreadsheetRequester
            AllowItemProposalSpreadsheetSupplier
        header2 of "NewItemProposalEmailsToItemReviewers"
        single column
            ItemProposalEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            ItemProposalEmailContent
                label is "EmailContent"
