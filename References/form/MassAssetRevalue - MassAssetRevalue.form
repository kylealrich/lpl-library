MassAssetRevalue is an ActionForm
    action is MassAssetRevalue
    Layout
        header2 of "SelectionOptions"
        two column
            FinanceEnterpriseGroup
            SelectNameGrp
                label is "SelectionName"
                select is MassRevalueSelections
        two column
            RevalueDate
            Release
                label is "Update"
        two column
            Book
            Posting
                label is "PostingEntries"
        paragraph
            PostingDate
        header4 of "Revalue"
        single column
            Amount
                label is "Amount"
            Percent
                label is "Percent"
            PercentSign
                label is "Sign"
        header2 of "OutputOptions"
        single column
            header3 of "PrintTotals"
            header4 of "Sequence"
            paragraph
                LocOption
                    label is "Location"
                DivOption
                    label is "Division"
                AssetOption
                    label is "Asset"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                MassAssetRevalueReport_RDG
            column2 of 25%
                MassAssetRevalueReport_XPT
