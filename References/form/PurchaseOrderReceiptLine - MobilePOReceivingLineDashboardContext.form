MobilePOReceivingLineDashboardContext is a Form
    title is "ReceiptLineDetails"
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            PurchaseOrderReceipt
                display as text
        paragraph
            PurchaseOrderLine.LineNumber
                label is "Line"
                display as text
        paragraph
            ShipToLocation
                label is "ReceivingLocation"
                display as text
            ShipToLocation.Name
                no label
                display as text
        paragraph
            PurchaseOrderReceipt.ReceivedDate
                label is "DateAndTimeReceived"
                display as text
        paragraph
            PurchaseOrderReceipt.Status
                label is "ReceiptStatus"
                display as text
        paragraph
            Status
                label is "LineStatus"
                display as text
        paragraph
            CreatedBy
                display as text
        paragraph
            Item
                display as text
            visible when (HasItemMaster)
                Item.Description
                    no label
                    display as text
            visible when (not HasItemMaster)
                Description
                    no label
                    display as text
        paragraph
            visible when (Item.UseLinkedImage)
                Item.ImageURL
                    display as image
            visible when (not Item.UseLinkedImage)
                Item.Picture.File
                    display as full image up to 5 lines
                        missing image is random background
                            foreground text is "<Item.ItemDescriptionAbbreviation>"
