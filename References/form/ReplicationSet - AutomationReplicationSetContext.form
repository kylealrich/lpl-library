AutomationReplicationSetContext is a Form
    title is "ReplicationSet"
    Layout
        three column
            ReplicationSet
            LastRefreshStamp
                display only
            InProcess
                display only
        two column
            MaintainHistoryCount
            PfiServiceDefinition
        single column
            Description
                use text area
        two column
            ExportFormat
            visible when (not ExportFormat.COLUMNAR)
                EnableEnterpriseSearch
                    mouse over text is "WhenEnabledAndTextSearchFieldsAreIncluded,TheSchemaWillInclude_Enterprise_SearchDefinitions."
        single column
            TimeStorageResolution
        two column
            visible when (not ExportFormat.COLUMNAR)
                LocaleSet
                DefaultLocale
                    compact format
        visible when (not ExportFormat.COLUMNAR)
            ReplicationSchemaDestination
            ReplicationDataDestination
        single column
            visible when (not ExportFormat.COLUMNAR)
                IncludeAsOfTimeField
            visible when (ReplicationDataDestination.Local)
                LocalDestination
            visible when (SchemaRegistrationRequired)
                text of "AllSchemasHaveNotBeenRegisteredOrTheReplicationSetStructureHasChangedSinceLastRegistration"
                    color of red
            button of "AddBusinessClasses"
                action is AddBusinessClasses
            blank line
