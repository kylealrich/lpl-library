PhoneMainForm is a Form
    Layout
        single column
            paragraph
                visible when (VarianceExists)
                    DerivedBankDifferenceAmount
                        label is "VarianceAmount"
                        display as text
                visible when (CanSeeDistributionTotals)
                    AppliedDistributionBankAmount
                        label is "AppliedAmount"
                        display as text
                    BalanceAmount
                        label is "Balance"
                        display as text
            paragraph
                CurrencyTable
                    show up to 10 characters
                CurrencyTable.Description
                    no label
                    display as text
            two column distributed
                paragraph
                    visible when (IsUnreleasedImportedTran)
                        ImportStatus
                            display as text
                    visible when (IsUnreleasedImportedTranWithMessage)
                        ImportErrorMessage
                            label is "ImportError"
                            display as text
                    visible when (Status.PendingApproval)
                        ApprovalRequestType
                            label is "ApprovalType"
                            display as text
                    visible when (IsUnreleasedCashLedgerReconciliationAdjustmentExist)
                        text of "UnreleasedAdjustmentExists"
                visible when (LastElectronicPaymentSerialNumber entered)
                    LastElectronicPaymentSerialNumber
                        label is "ElectronicPaymentSerialNumber"
                        display as text
            paragraph
                visible when (ReconciledToBankStatement)
                    ReconcilingBankStatement
                        display as text
                    MatchNumber
                        display as text
                    MatchField
                        display as text
                    button of "ViewStatement"
                        link is BankStatementForm
            blank line
            paragraph
                visible when (BudgetEditInProgress)
                    text of "BudgetEditsInProgress"
                        bold
                        color of red
                visible when (BudgetEditFailure)
                    text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                        bold
                        color of red
            Description
                show up to 10 characters
            paragraph
                IssueDate
                    label is "TransactionDate"
                visible when (ReconcileDateExists)
                    ReconciliationData.ExchangeDate
                        label is "<DerivedReconcileDateMessage>"
                        display as text
            Source
                label is "SourceType"
            CashLedgerProcessLevel
            header2 of "PaymentInformation"
            paragraph
                visible when (HasTransactionAttachment)
                    TransactionAttachment.File
                        no label
                visible when (not IsUnreleased2)
                    button of "MaintainAttachment"
                        action is MaintainTransactionAttachment
                        display as link
            Reference
                show up to 15 characters
            GeneralLedgerPostDate
                label is "PostDate"
            GeneralLedgerEvent
                label is "GlobalLedgerEvent"
            paragraph
                visible when (HasVoidStopPayAttachment)
                    VoidStopPayAttachment
                        compact format
                    button of "View"
                        view VoidStopPayAttachment.File
                        display as link
                    button of "MaintainAttachment"
                        action is MaintainAttachment
                        display as link
        blank line
        header2 of "PaymentInformation"
        single column
            PayeeFirstName
                label is "First"
            PayeeMiddleName
                label is "Middle"
            PayeeName
                label is "FullOrLast"
            MailingName
            visible when (not IsSourceCodeAP)
                PayeePostalAddress
                    form is PostalAddressMinimumWithType
            visible when (IsSourceCodeAP)
                single column
                    DerivedPayeeAddressCountry
                        label is "Country/\\Jurisdiction"
                    DerivedPayeeAddressLine1
                        label is "StreetAddress"
                    DerivedPayeeAddressLine2
                        no label
                    DerivedPayeeAddressLine3
                        no label
                    DerivedPayeeAddressLine4
                        no label
                    DerivedPayeeAddressMunicipality
                        label is "City"
                    DerivedPayeeAddressState
                        label is "State/Province"
                    DerivedPayeeAddressPostal
                        label is "PostCode"
            PayCurrency
            PaymentAmount
            ConfirmationNumber
            paragraph
                BankAccountType
                GlobalBankAccountType
