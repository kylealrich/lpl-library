CreatePeriodReconciliations is an ActionForm
    action is CreatePeriodReconciliations
    title is "CreatePeriodReconciliation"
    Layout
        visible when (LevelType.Group)
            paragraph
                ReconciliationGroup
                    display as text
                ReconciliationGroupMethod
                    display as text
        visible when (LevelType.NonAccount)
            paragraph
                NonAccountReconciliation
                    display as text
        visible when (IsAccountWithinGroup)
            paragraph
                ParentReconciliationAccount.ReconciliationGroup
                    display as text
        visible when (LevelType.Account)
            paragraph
                ReconciliationCodeBlock
                    display as text
                ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
        paragraph
            PrmGeneralLedgerClosePeriod
                label is "Period"
                compact format
            PrmGeneralLedgerClosePeriod.PeriodName
                no label
                display as text
        paragraph
            PrmGeneralLedgerClosePeriod.DerivedEndDate
                no label
                display as text
        header2 of "PeriodOverrides"
        paragraph
            PrmFinanceTeam
                label is "Team"
            PrmFinanceTeam.Description
                no label
                display as text
        paragraph
            PrmFinanceTeamMember
                label is "TeamMember"
                compact format
            PrmFinanceTeamMember.TeamMember.PreferredSimplePresentationName
                no label
                display as text
