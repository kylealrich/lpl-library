MobileVendorLocationContext is a Form
    title is "VendorLocationContext"
    Layout
        two column table
            column1
                Logo.File
                    no label
                    align as label
                    display as full image up to 5 lines
                        missing image is missingpicture96px
                blank line
            column2
                display as text
                    VendorGroup
                    VendorGroup.Description
        two column table
            column1
                Vendor
                    display as text
            column2
                Vendor.VendorName
                    display as text
        single column
            VendorLocation
                label is "Location"
                display as text
            visible when (VendorLocation entered)
                VendorName
                    label is "LocationName"
            Status
            visible when (OnHold)
                text of "VendorLocationIsOnHold"
                    bold
                    color of red
            visible when (LocationOnHold)
                paragraph
                    text of "VendorClaimsChargebackHold:"
                        bold
                        color of red
                    VendorClaimHoldCode
                        no label
                        display as text
            AddressEffectiveDate
