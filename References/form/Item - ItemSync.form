ItemSync is an ActionForm
    action is SyncItemInformation
    title is "SynchronizeItemInformation"
    Layout
        single column
            ItemGroup
                display as text
            Item
                display as text
        header3 of "ManufacturerInformation"
        two column
            column1
                Manufacturer
                    label is "CurrentManufacturer"
                    display only
                    compact format
                ManufacturerNumber
                    label is "CurrentManufacturerNumber"
                    display only
            column2
                PrmManufacturer
                    label is "ReplacementManufacturer"
                    compact format
                PrmManufacturerNumber
                    label is "ReplacementManufacturerNumber"
        header3 of "Descriptions"
        two column
            column1
                Description
                    label is "CurrentDescription1"
                    display only
                Description2
                    label is "CurrentDescription2"
                    display only
                Description3
                    label is "CurrentLongDescription"
                    display only
                    use text area of 3 lines
            column2
                ReplacedDescription1
                    label is "ReplacementDescription1"
                ReplacedDescription2
                    label is "ReplacementDescription2"
                ReplacedDescription3
                    label is "ReplacementLongDescription"
                    use text area of 3 lines
