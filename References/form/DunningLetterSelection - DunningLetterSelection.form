DunningLetterSelection is an ActionForm
    action is DunningLetterSelection
    title is "AdvancedDunningLetterSelection"
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            text of "Or"
                bold
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            IncludeCredits
        single column
            Reselect
        single column
            DunningDate
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DunningLetterSelectionReport_RDG
                DunningLetterSelectionErrorReport_RDG
            column2 of 25%
                DunningLetterSelectionReport_XPT
                DunningLetterSelectionErrorReport_XPT
