Link is an ActionForm
    action is LinkToPrerequisiteTask
    title is "Link"
    Layout
        header3 of "SelectTheTaskToBeginOrCompleteBefore:<TaskName>"
        five column
            TaskName
                no label
                display as text
            PrmDependencyType
                no label
            PrmPrerequisiteTask
                label is "Before"
                select is DetailTaskWithinProcessSelect
            PrmPrerequisiteTask.TaskName
                no label
                display as text
            text of "HasBeenCompleted"
        blank line
        single column
            PrmWaitForApproval
                label is "WaitForApproval"
        blank line
        paragraph
            PrmNotes
                label is "Notes"
                use text area of 4 lines
