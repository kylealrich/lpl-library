InterfacePaymentContext is a Form
    title is "DocumentPaymentInterface"
    Layout
        visible when (ReceivablePayment not entered)
            four column distributed
                column1
                    paragraph
                        DocumentARPaymentImport
                            label is "ImportID"
                            display only
                    paragraph
                        Company
                            select is Companies
                            display as required
                        Company.Name
                            no label
                            display as text
                    paragraph
                        Customer
                            label is "Customer"
                            display as required
                        Customer.Name
                            no label
                            display as text
                    TransNbr
                        label is "Payment"
                        display as required
                    TransactionAmount
                        label is "TransactionAmount"
                        display as required
                column2
                    SeqNbr
                        label is "SequenceNumber"
                    InterfacedCustomer
                        label is "ExternalCustomer"
                    BankEntity
                    XrefNbr
                        label is "CrossReferenceNumber"
                    visible when (CustomerMappingTableInterfaceRelExists)
                        CustomerMappingTableInterfaceRel.Customer.RepresentativeText
                            no label
                            display as text
                column3
                    Prepayment
                    PrepaymentXrefNumber
                    BankAccountNumber
                    visible when (CompanyCustomerBankAccountRelExists)
                        CompanyCustomerBankAccountRel.Customer.RepresentativeText
                            no label
                            display as text
                column4
                    RPAProcess
                    button of "OpenInforDocumentManagement"
                        visible when (IDMUniqueID entered)
                        link is external "<DerivedIDMDocumentURL>"
                            lazy url retrieval
                        display as link
        visible when (ReceivablePayment entered)
