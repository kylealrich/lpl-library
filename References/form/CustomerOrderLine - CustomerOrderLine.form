CustomerOrderLine is a CompositeForm
    is primary
    title is "CustomerOrderLine"
    context form is CustomerOrderLineContext
        background is theme color
    restrict action CreateCustomerOrderReturnLine
    Actions
        action is Unreleased.ReleaseCustomerOrder
            action icon is release
            hide when invalid
        action is Unreleased.ReleaseShipImmediates
            action icon is release
            hide when invalid
        action is UpdateHoldCode
            action icon is edit
            hide when invalid
        action is Unreleased.Create
            label is "_"
        action is save
            label is "_"
        action is Unreleased.Delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Charges is a Panel
        list is CustomerOrderAddOnChargesRel.LineAddOnCharges
    Shipments is a Panel
        visible when (IsShipmentExists)
        list is WarehouseShipmentLineRel.Shipmentss
    KitOptions is a Panel
        list is DocumentKitComponentsRel.KitOptions
    KitAccessories is a Panel
        list is KitComponentsRel.LineKitAccessories
    Substitute is a Panel
        visible when (HasSubstituteItem)
        list is ItemSubstitutesRel.SubstituteItems
    ComplementaryItems is a Panel
        visible when (HasItemCompanions)
        list is ItemCompanionsRel.ComplementaryItems
    Comments is a Panel
        list is OrderEntryOrderCommentsForLineRel.OrderEntryOrderCommentList
    TaxInquiry is a Panel
        form is OrderLineTaxInquiry
    PriceBreaksFromContract is a Panel
        title is "PriceBreaks"
        visible when (DisplayPriceBreakFromContract)
        form is PriceBreaksFromContract
    PriceBreaksFromPromotion is a Panel
        title is "PriceBreaks"
        visible when (DisplayPriceBreakFromPromotion)
        form is PriceBreaksFromPromotion
    PriceBreaksFromPriceList is a Panel
        title is "PriceBreaks"
        visible when (DisplayPriceBreakFromPriceList)
        form is PriceBreaksFromPriceList
    Attachments is a Panel
        list is CustomerOrderLineAttachment set.primary
