InterfaceDetail is a Form
    title is "LineDetails"
    Layout
        single column
            visible when (not RecordExists)
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
        three column distributed
            Item
                show up to 22 characters
            Description
                label is "ItemDescription"
            paragraph
                Buyer
                Buyer.Employee.FirstLastName
                    no label
                    display as text
        three column distributed
            paragraph
                Quantity
                EnteredUOM
                    label is "OverrideCostUOM"
            EnteredUnitCost
                label is "OverrideCost"
            paragraph
                RequestedDeliveryDate
                    label is "DeliveryDate"
                DeliveryMethod
        three column distributed
            ShipToLocation
                label is "ShipTo"
            Manufacturer
                compact format
            ManufacturerNumber
                show up to 20 characters
        three column distributed
            VendorItem
                show up to 22 characters
            CommodityCode
                show up to 22 characters
            AllocationPriority
                display as text
        three column grid distributed
            visible when (IsAribaEnabled)
                AribaPOType
                    display as text
            visible when (IsAribaEnabled)
                QuoteNumber
                    display as text
            visible when (IsAribaEnabled)
                Confirming
                    display as text
        visible when (HasSpecialHandlingCode)
            header2 of "SpecialHandling"
            single column
            paragraph
                DerivedSpecialHandlingCode
                    label is "SpecialHandlingCode"
                DerivedSpecialHandlingDescription
                    no label
                    display as text
            two column distributed
                DerivedSpecialHandlingInstructions
                    display as text
                    use text area of 5 lines
            single column
                DerivedTimeSensitive
                    label is "TimeSensitive"
                    display as text
                visible when (DerivedTimeSensitive)
                    DerivedHandlingTimeInMinutes
                        label is "HandlingTimeInMinutes"
        header2 of "Purchasing"
        three column distributed
            column1
                paragraph
                    Vendor
                    Vendor.VendorName
                        label is "Name"
                        display as text
                paragraph
                    display as text
                        ItemType
                        ServiceCode
            column2
                PurchaseFromLocation
                    select is ActivePurchaseFromLocations
                paragraph
                    Contract
                        raise yellow alert when (IsInvalidContract)
                            mouse over text is "<InvalidContractMessage>"
                    visible when (ItemType.Service)
                        ContractLine
                            select is ContractLinesForAServiceItemPO
                            raise yellow alert when (IsInvalidContractLine)
                                mouse over text is "<InvalidContractLineMessage>"
            column3
                display as text
                    paragraph
                        TransactionCurrencyCode
                        DeliverTo
                    PunchoutId
                        label is "PunchoutI\\D"
        header2 of "Source"
        display as text
            three column distributed
                column1
                    visible when (not HasRequester)
                        Requester
                            label is "Requester"
                    visible when (HasRequester)
                        RequesterName
                            label is "Requester"
                    CompanyNameUI
                        label is "Company"
                column2
                    visible when (not RequestingLocationEntered)
                        PurchaseOrderInterface.RequestingLocation
                            label is "RequestingLocation"
                    visible when (RequestingLocationEntered)
                        RequestingLocationName
                            label is "RequestingLocation"
                    OperatingCompanyName
                        label is "OperatingCompany"
                column3
                    OneSourceDocumentToOnePO
                        label is "SingleDocument_to_aPurchaseOrder"
