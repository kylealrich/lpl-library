ResponseToRecallProductQuestion is a Form
    is primary
    title is "Question"
    Layout
        single column
            RecallProductQuestion.Description
                label is number
                display as text
            visible when (HasAttachment)
                button of "View<RecallProductQuestion.Attachment.Title>"
                    view RecallProductQuestion.Attachment.File
                    display as link
            text of "<ConditionalAnswerLabel>"
                italics
            Response
                label is "<ResponseLabel>"
        paragraph
            visible when (AttachmentUploadAllowed)
                paragraph
                    Attachment
                        label is "<AttachmentLabel>"
                        compact format
                    visible when (HasResponseAttachment)
                        button of "View<Attachment.Title>"
                            view Attachment.File
                            display as link
