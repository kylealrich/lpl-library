RecurringInvoiceLines is a CompositeForm
    is primary
    title is "<DerivedFormTitleForInvLine>"
    context form is RecurringInvoiceItemsContext
        background is theme color
    Main is a Panel
        form is InvoiceLineItems
    AddOnCharge is a Panel
        title is "AddOnCharges"
        list is RecurringInvoiceAddOnChargesRel.RecurringInvoiceAddOnChargess
    InvoiceComments is a Panel
        title is "Comments"
        list is RecurringInvoiceCommentsRel.RecurringInvoiceCommentsList
    Attachments is a Panel
        list is RecurringInvoiceLineAttachment set.primary
