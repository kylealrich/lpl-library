GenerateFederalFinancialReports is an ActionForm
    action is GenerateFederalFinancialReports
    title is "GenerateFederalFinancialReports"
    Layout
        two column
            column1
                FundingSourceGroup
            column2
                FundingSourceGroup.Description
                    no label
                    display as text
        single column
            PrmDescription
                label is "ReportDescription"
            PrmReportType
                label is "ReportType"
            PrmBasis
                label is "Basis"
            PrmReportingThruDate
                label is "ReportingThruDate"
            PrmUseIDM
            visible when (PrmUseIDM)
                PrmIDMTemplate
                    select is GrantFederalReportingIDMTemplate
            visible when (not PrmUseIDM)
                PrmGrantFederalReportFormat
