Main is a Form
    Layout
        two column distributed independent
            column1
                paragraph
                    Customer
                        select is CustomerContextCompanySelectList
                    Customer.Name
                        no label
                        display as text
                paragraph
                    BillingProcessLevel
                        label is "ProcessLevel"
                        select is ProcessLevels
                    BillingProcessLevel.Name
                        no label
                        display as text
                paragraph
                    Location
                        display as required when (true)
                    Location.Name
                        no label
                        display as text
                paragraph
                    InvoiceDate
                        label is "Date"
                    BillingInvoiceType
                        label is "InvoiceType"
                    BillingInvoiceType.Description
                        no label
                        display as text
                paragraph
                    ReasonCode
                    ReasonCode.Description
                        no label
                        display as text
                visible when (ParallelReferenceEnabled)
                    paragraph
                        ParallelReference
                            display as text
                paragraph
                    Currency
                        label is "Currency"
                    Currency.Description
                        no label
                        display as text
                    CurrencyTable
                    CurrencyTable.Description
                        no label
                        display as text
                paragraph
                    CurrencyRate
                        label is "CurrencyRate"
                paragraph
                    Revalue
                        label is "CurrencyRevaluation"
                paragraph
                    visible when (Company.ReceivableCompany.UseEWayBillNumber)
                        EWayBillNumber
                paragraph
                    DerivedVatRegistrationNumber
                        label is "VATRegistrationNumber"
                        display as text
                paragraph
                    CertificationNumber
                    CertificationDate
            column2
                header2 of "ShipTo"
                paragraph
                    visible when (not IsUnreleased)
                        CustomerShipTo
                            no label
                            display as text
                    visible when (IsUnreleased)
                        CustomerShipTo
                            no label
                    CustomerShipTo.Name
                        no label
                        display as text
                visible when (CustomerShipTo entered)
                    paragraph
                        CustomerShipTo.ShipToAddress.DisplayAddressMultiline
                            no label
                            display as text
                    paragraph
                        visible when (CustomerShipTo.ShipToAddress.Country entered)
                            CustomerShipTo.ShipToAddress.Country
                                no label
                                display as text
                    paragraph
                        visible when (CustomerShipTo.ShipToAddress.Region entered)
                            CustomerShipTo.ShipToAddress.Region
                                no label
                                display as text
                    paragraph
                        visible when (CustomerShipTo.PhoneNumber.InternationalPrefix entered)
                            CustomerShipTo.PhoneNumber.InternationalPrefix
                                label is "Phone"
                                display as text
                            visible when (CustomerShipTo.PhoneNumber.SubscriberNumber entered)
                                CustomerShipTo.PhoneNumber.SubscriberNumber
                                    no label
                                    display as text
                        visible when (CustomerShipTo.PhoneNumber.InternationalPrefix not entered)
                            visible when (CustomerShipTo.PhoneNumber.SubscriberNumber entered)
                                CustomerShipTo.PhoneNumber.SubscriberNumber
                                    label is "Phone"
                                    display as text
                        visible when (CustomerShipTo.PhoneNumber.Extension entered)
                            CustomerShipTo.PhoneNumber.Extension
                                display as text
                    paragraph
                        visible when (CustomerShipTo.EmailAddress entered)
                            CustomerShipTo.EmailAddress
                                label is "Email"
                                display as text
                            button of icon.mail
                                link is "mailto:<CustomerShipTo.EmailAddress>"
                    paragraph
                        visible when (CustomerShipTo.FaxNumber.InternationalPrefix entered)
                            CustomerShipTo.FaxNumber.InternationalPrefix
                                label is "Fax"
                                display as text
                            visible when (CustomerShipTo.FaxNumber.SubscriberNumber entered)
                                CustomerShipTo.FaxNumber.SubscriberNumber
                                    no label
                                    display as text
                        visible when (CustomerShipTo.FaxNumber.InternationalPrefix not entered)
                            visible when (CustomerShipTo.FaxNumber.SubscriberNumber entered)
                                CustomerShipTo.FaxNumber.SubscriberNumber
                                    label is "Fax"
                                    display as text
                        visible when (CustomerShipTo.FaxNumber.Extension entered)
                            CustomerShipTo.FaxNumber.Extension
                                display as text
