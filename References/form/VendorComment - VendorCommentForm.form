                        display as text
                VendorGroup.Description
                    no label
                    display as text
            paragraph
                visible when (not RecordExists)
                    Vendor
                visible when (RecordExists)
                    Vendor
                        display as text
                Vendor.VendorName
                    no label
                    display as text
            paragraph
                visible when (not RecordExists)
                    VendorLocation
                        label is "Location"
                visible when (RecordExists)
                    VendorLocation
                        label is "Location"
                        display as text
            paragraph
                visible when (not RecordExists)
                    Company
                visible when (RecordExists)
                    Company
                        display as text
                Company.Name
                    no label
                    display as text
        four column distributed
            PrintCode
            paragraph
                DateRange.Begin
                    label is "BeginDate"
                DateRange.End
                    label is "EndDate"
