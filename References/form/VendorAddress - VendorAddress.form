VendorAddress is a Form
    is primary
    Layout
        three column distributed
            column1
                paragraph
                    VendorGroup
                    VendorGroup.Description
                        no label
                        display as text
            column2
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
            column3
                visible when (IsVendorLocation)
                    paragraph
                        VendorLocation
                            label is "Location"
                        VendorLocation.VendorName
                            no label
                            display as text
        visible when (HasVendorContact)
            paragraph
                VendorContact.VendorContactCode
                    label is "Contact"
                VendorContact.ContactLevel
                    label is "ContactLevel"
        single column
            paragraph
                effective date
                visible when (IsMainAddress)
                    TransientUpdatePrimeContact
        header2 of "Address"
        PostalAddress
            form is PostalAddressShortRequired
