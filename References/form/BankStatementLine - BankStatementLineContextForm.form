BankStatementLineContextForm is a Form
    title is "BankStatementLine"
    Layout
        two column distributed
            column1
                paragraph
                    BankStatement
                        label is "StatementNumber"
                        display as text
                    StatementDate
                        display as text
                paragraph
                    DerivedLineNumber
                        display as text
                    LineAmount
                        display as text
                    DebitCreditIndicator
                        display as text
                paragraph
                    visible when (DistributionsOutOfBalance)
                        LineDistributionAmount
                            label is "TotalDistributionAmount"
                            display as text
                        OutOfBalanceAmount
                            display as text
            column2
                paragraph
                    CashManagementAccount
                        display as text
                    CashManagementAccount.Title
                        display as text
                paragraph
                    LineStatus
                        display as text
        blank line
        paragraph
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditFailure)
                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                    bold
                    color of red
