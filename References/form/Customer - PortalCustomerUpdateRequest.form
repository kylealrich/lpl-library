PortalCustomerUpdateRequest is an ActionForm
    action is PortalCustomerUpdateRequest
    title is "CustomerUpdateRequest"
    Layout
        visible when (actor.initiator)
            header4 of "This_request_will_be_routed_for_approval;_after_it_is_approved_your_information_will_be_updated"
        visible when (not actor.initiator)
            display as text
                two column
                    RequestedBy
                    RequesterActor
                        label is "ID"
                two column
                    RequesterPhone
                        label is "PhoneNumber"
                        compact format
                    button of "<RequesterEmail>"
                        link is "mailto:<RequesterEmail>"
                        label is "EmailAddress"
                        display as link
            blank line
        header3 of "CustomerInformation"
        paragraph
            Customer
                display as text
            Customer.Name
                display as text
        PrmTaxID
            label is "TaxID"
        PrmPostalAddress
            form is PostalAddressMinimum
        header3 of "ContactInformation"
        two column distributed
            column1
                paragraph
                    PrmContact
                        label is "Contact"
                    ContactTitle
                        label is "ContactTitle"
                paragraph
                    PhoneNumber.InternationalPrefix
                        label is "PhoneNumber"
                    PhoneNumber.SubscriberNumber
                        no label
                    PhoneNumber.Extension
                        label is "Ext"
                    text of "(InternationalPrefix,PhoneNumber,Extension)"
                        italics
                paragraph
                    MobileNumber.MobilePhoneNumber.InternationalPrefix
                        label is "MobileNumber"
                    MobileNumber.MobilePhoneNumber.SubscriberNumber
                        no label
                    MobileNumber.SmsEnabled
                        label is "SmsEnabled"
                    text of "(InternationalPrefix,MobileNumber,SmsEnabled)"
                        italics
                paragraph
                    FaxNumber.InternationalPrefix
                        label is "FaxNumber"
                    FaxNumber.SubscriberNumber
                        no label
                    FaxNumber.Extension
                        label is "Ext"
                    text of "(InternationalPrefix,FaxNumber,Extension)"
                        italics
                paragraph
                    PrmEmailAddress
                        label is "EmailAddress"
                paragraph
                    URLAddress
                        label is "URLAddress"
            column2
                TwitterID
                SocialNetworkID2
                SocialNetworkID3
                SocialNetworkID4
                SocialNetworkID5
