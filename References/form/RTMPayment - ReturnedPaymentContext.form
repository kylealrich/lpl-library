ReturnedPaymentContext is a Form
    Layout
        three column distributed
            column1
                visible when (not RTMPaymentExists)
                    paragraph
                        Company
                            select is Companies
                visible when (RTMPaymentExists)
                    paragraph
                        Company
                            display as text
                            select is Companies
                        Company.Name
                            no label
                            display as text
                        Company.Currency
                            no label
                            display as text
                visible when (not RTMPaymentExists)
                    paragraph
                        Customer
                            select is CustomerContextCompanyCustomerSelectList
                visible when (RTMPaymentExists)
                    visible when (IsCustomerPayment)
                        paragraph
                            Customer
                                display as text
                                select is CustomerContextCompanyCustomerSelectList
                            Customer.Name
                                no label
                                display as text
                    visible when (IsNonAR)
                        paragraph
                            text of "NonARPayment"
            column2
                visible when (not RTMPaymentExists)
                    paragraph
                        RTMPayment
                            label is "Payment"
                visible when (RTMPaymentExists)
                    paragraph
                        RTMPayment
                            label is "Payment"
                            display as text
                        ReceivablePaymentRel.OriginalCurrency
                            no label
                            display as text
                visible when (Status.UnreleasedRtm)
                    ReturnDate
                visible when (Status.ReleasedRtm)
                    ReturnDate
                        display as text
            column3
                visible when (not RTMPaymentExists)
                    ReceivablePaymentHeader
                        label is "Batch"
                        select is ReceivablePaymentHeaderList
                visible when (RTMPaymentExists)
                    ReceivablePaymentHeader
                        label is "Batch"
                        display as text
                DerivedStatus
                    label is "Status"
                    display as tag
                        color of gray when (Status.UnreleasedRtm)
                        color of green when (Status.ReleasedRtm)
