MobileReceivingInspectionContext is a Form
    title is "ReceiptInspections"
    Layout
        single column
            visible when (not DocumentExists)
                PurchaseOrderReceipt
                    label is "Receiver"
                    select is PurchaseOrderReceiptsNeedingInspection
            visible when (DocumentExists)
                PurchaseOrderReceipt
                    label is "Receiver"
                    display as text
            POReceiptAdjustmentAndInspection
                label is "InspectionDocumentNumber"
                display as text
            Status
                label is "Status"
                display as text
