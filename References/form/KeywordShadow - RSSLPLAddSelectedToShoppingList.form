RSSLPLAddSelectedToShoppingList is an ActionForm
    action is RSSLPLAddSelectedToShoppingList
    submit label is "Ok"
    title is "AddSelectedItems_toShoppingList"
    Layout
        paragraph
            PrmAddToShoppingList
                no label
                display as horizontal radio buttons
        visible when (PrmAddToShoppingList.AddToNewShoppingList)
            paragraph
                PrmShoppingListName
                    label is "ShoppingListName"
                    display as required
            paragraph
                PrmDescription
                    label is "ShoppingListDescription"
                    display as required
        visible when (PrmAddToShoppingList.AddToExistingShoppingList)
            paragraph
                PrmProcurementTemplate
                    label is "ExistingShoppingList"
                    select is RSSLPLShoppingListTemplate
