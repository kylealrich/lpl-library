MobilePaymentEntry is a Form
    title is "PaymentEntry"
    Layout
        two column distributed
            CashCode
            CashCode.Description
                no label
                display as text
        single column
            CashCode.Currency
                label is "Currency"
                display as text
        two column distributed
            CashLedgerPayment.BankTransactionCode
                select is CashPayments
            CashLedgerPayment.BankTransactionCode.Description
                no label
                display as text
        two column distributed
            CashLedgerTransactionIdentifier
                display as text
            Reference
                label is "ReferenceNumber"
        two column distributed
            Status
                display as text
            PaymentStatus
                display as text
        two column distributed
            BankCheckAmountUnsigned
                label is "Amount"
            visible when (UsingBankCurrencyPosting)
                BankAmount
            visible when (IsUnreleased)
                DistributionTotal
                    label is "AppliedAmount"
                    display as text
                BalanceAmount
                    label is "Balance"
                    display as text
            visible when (IsBatchApproved)
                CashLedgerBatchApproval
                    display as text
        blank line
        paragraph
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditFailure)
                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                    bold
                    color of red
