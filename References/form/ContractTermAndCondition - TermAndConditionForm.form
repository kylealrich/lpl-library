TermAndConditionForm is a Form
    title is "ContractTerm_andCondition"
    Layout
        single column
            Title
        visible when (ContractTermAndConditionExists)
            visible when (AllowDescriptionUpdate)
                single column
                    HeaderText
                    Description
                        use text area of 10 lines
                    visible when (Modified)
                        text of "Term_and_ConditionModifiedFromOriginalState"
                            italics
                    visible when (not Modified)
                        visible when (ContractTermAndConditionExists)
                            text of "Term_and_ConditionNotModified"
                                italics
                    visible when (EligibleForSourcing)
                        SSTerm
                            label is "SendTerm_and_ConditionToSourcing"
            visible when (not AllowDescriptionUpdate)
                single column
                    HeaderText
                        display as text
                    Description
                        display as text
                        use text area of 10 lines
                    visible when (AllowUpdate)
                        visible when (Modified)
                            text of "Term_and_ConditionModifiedFromOriginalState"
                                italics
                        visible when (not Modified)
                            visible when (ContractTermAndConditionExists)
                                text of "Term_and_ConditionNotModified"
                                    italics
                    visible when (EligibleForSourcing)
                        SSTerm
                            label is "SendTerm_and_ConditionToSourcing"
                            display as text
        visible when (not ContractTermAndConditionExists)
            single column
                HeaderText
                Description
                    use text area of 10 lines
                visible when (EligibleForSourcing)
                    SSTerm
                        label is "SendTerm_andConditionToSourcing"
