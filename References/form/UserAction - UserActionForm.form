UserActionForm is a Form
    is primary
    Layout
        paragraph
            BusinessClass
                select is ConfigurableBusinessViewList
            ActionName
            Type
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserAction
                label is "UserActionId"
            Description
        single column
            LPL
                use text area of 35 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 10 lines
