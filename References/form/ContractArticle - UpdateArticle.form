UpdateArticle is an ActionForm
    action is SupplierUpdateArticle
    title is "RequestToUpdateArticle"
    Layout
        paragraph
            Contract
                display as text
            Contract.Name
                display as text
        paragraph
            ContractArticle
                display as text
            Title
                no label
                display as text
        visible when (PendingArticleUpdateExists)
            paragraph
                DerivedCompareCurrentPreviousHeaderText
                    label is "ChangesToHeaderText"
                button of "ViewHistory"
                    visible when (not Contract.AddendumExists)
                    link is SupplierArticleHistoryListNav
                button of "ViewHistory"
                    visible when (Contract.AddendumExists)
                    link is SupplierArticleHistoryListAddendumNav
            blank line
        single column
            PrmRequestedHeaderText
                label is "CurrentHeaderTextToUpdate"
            PrmComment
                label is "UpdateComment"
                use text area of 3 lines
