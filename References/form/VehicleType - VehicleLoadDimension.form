VehicleLoadDimension is a Form
    Layout
        header1 of "Vehicle_Load_Capacity"
        paragraph
            VehicleWeightCapacity
                label is "Weight"
        paragraph
            VehicleVolumeCapacity
                label is "Cubic_Volume"
        header2 of "Dimensions"
        text of "Interior"
        paragraph
            InteriorLength
                label is "Length"
                display as required when (RequireInteriorLength)
                when value changed
                    refresh RequireInteriorWidth
                    refresh RequireInteriorHeight
            InteriorWidth
                label is "Width"
                display as required when (RequireInteriorWidth)
                when value changed
                    refresh RequireInteriorLength
                    refresh RequireInteriorHeight
            InteriorHeight
                label is "Height"
                display as required when (RequireInteriorHeight)
                when value changed
                    refresh RequireInteriorWidth
                    refresh RequireInteriorLength
        text of "Exterior"
        paragraph
            ExteriorLength
                label is "Length"
                display as required when (RequireExteriorLength)
                when value changed
                    refresh RequireExteriorWidth
                    refresh RequireExteriorHeight
            ExteriorWidth
                label is "Width"
                display as required when (RequireExteriorWidth)
                when value changed
                    refresh RequireExteriorLength
                    refresh RequireExteriorHeight
            ExteriorHeight
                label is "Height"
                display as required when (RequireExteriorHeight)
                when value changed
                    refresh RequireExteriorWidth
                    refresh RequireExteriorLength
