BuyerFormContext is a Form
    Layout
        visible when (RecordExists)
            five column distributed
                column1
                    Buyer.Employee.ResourcePicture.File
                        display as portrait image
                            missing image is random background
                                foreground text is "<Buyer.Employee.Name.Initials>"
                column2
                    paragraph
                        Buyer.Employee.FirstLastNameID
                            label is "Employee"
                            display as text
                        button of icon.profile
                            link is EmployeeNav
                    HROrganization.HROrgAndDescription
                        label is "HROrganization"
                        display as text
                column3
                    paragraph
                        Buyer.Employee.EmployeeWorkEmailAddress
                            label is "WorkEmail"
                            display as text
                        button of icon.mail
                            visible when (Buyer.Employee.EmployeeWorkEmailAddressExists)
                            link is "mailto:<Buyer.Employee.EmployeeWorkEmailAddress>"
                column4
                    paragraph
                        Buyer.Employee.EmployeeWorkTelephone
                            label is "WorkPhone"
                            display as text
                        button of icon.phone
                            visible when (Buyer.Employee.EmployeeWorkPhoneExists)
                            link is "tel:<Buyer.Employee.EmployeeWorkTelephone>"
                column5
                    DerivedStatusDisplay
                        no label
                        display as tag
                            color of green when (Active)
                            color of red when (not Active)
