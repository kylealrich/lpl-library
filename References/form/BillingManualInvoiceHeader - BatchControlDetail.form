BatchControlDetail is a Form
    is primary
    title is "BatchControl"
    Actions
        action is Release
            action icon is release
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Layout
        two column independent
            column1
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    BatchCount
                        label is "Count"
                    DetailCount
                        label is "DetailCount"
                        display as text
                BillingInvoiceSource
                    label is "Source"
                    display as text
            column2
                paragraph
                    BillingManualInvoiceHeader
                        label is "Batch"
                        display as text
                    Description
                paragraph
                    BatchQuantity
                        label is "Quantity"
                    DetailQuantity
                        label is "DetailQuantity"
                        display as text
                BatchDate
                    label is "Date"
                    display as text
