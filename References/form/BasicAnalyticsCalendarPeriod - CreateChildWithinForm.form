CreateChildWithinForm is an ActionForm
    action is CreatePeriodWithin
    title is "CreatePeriodWithinSelectedParent"
    Layout
        three column
            ExistingEndDateBegin
                label is "SelectExistingEndDateRange"
                select is EndDates
            ExistingEndDateEnd
                label is "Thru"
                select is EndDates
        single column
            text of "OrCreateANewRecord"
                align as label
            NewPeriodType
                label is "NewPeriodType"
            visible when (NewPeriodType.Quarter)
                CreateAll
                visible when (not CreateAll)
                    NewQuarter
                        label is "Quarter"
                    NewDisplayPeriod
                        label is "DisplayPeriod"
            visible when (NewPeriodType.Month)
                CreateAll
                visible when (not CreateAll)
                    NewMonth
                        label is "Month"
                    NewDisplayPeriod
                        label is "DisplayPeriod"
            visible when (NewPeriodType.Week)
                CreateAll
                visible when (not CreateAll)
                    NewWeek
                        label is "Week"
                    NewDisplayPeriod
                        label is "DisplayPeriod"
            visible when (NewPeriodType.Day)
                CreateAll
                visible when (CreateAll)
                    NumberOfDays
                visible when (not CreateAll)
                    NewDay
                        label is "Day"
                    NewDisplayPeriod
                        label is "DisplayPeriod"
            visible when (NewPeriodType.EndDate)
                NewEndDate
                    label is "PeriodEndDate"
