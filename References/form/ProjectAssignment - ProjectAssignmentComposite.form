ProjectAssignmentComposite is a CompositeForm
    is primary
    title is "Assignment_<Project>_<Project.Description>"
    context form is ProjectAssignmentContext
        background is theme color
    Main is a Panel
        form is MainAssignmentForm
    AssignmentSplit is a Panel
        visible when (not Employee.ExcludeFromLabor)
        list is ProjectAssignmentSplit set.ProjectAssignmentSplits
    LaborDistribution is a Panel
        title is "LaborDistribution"
        visible when (HasProjectAssignmentLabor)
        list is ProjectAssignmentLabor set.ProjectAssignmentLaborList
    ProjectAssignmentComment is a Panel
        list is ProjectAssignmentComment set.ProjectAssignmentCommentList
    UserFields is a Panel
        form is UserFieldsForm
