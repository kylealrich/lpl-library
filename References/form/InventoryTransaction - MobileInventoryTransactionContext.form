MobileInventoryTransactionContext is a Form
    title is "InventoryTransaction"
    Layout
        visible when (RecordExists)
            display as text
                two column distributed
                    MobileTransactionCompany
                        label is "Company"
                    MobileTransactionLocation
                        label is "Location"
                    InventoryTransactionType
                        label is "DocumentType"
                    InventoryTransaction
                        label is "Transaction"
                single column
                    Status
                        label is "Status"
        visible when (not RecordExists)
            paragraph
                Company
                Company.Name
                    label is "_"
                    display as text
            paragraph
                InventoryLocation
                    label is "Location"
                    show up to 10 characters
                InventoryLocation.Name
                    label is "_"
                    display as text
            paragraph
                display as text
                    visible when (not RecordExists)
                        InventoryTransactionType
                            label is "DocumentType"
                    visible when (RecordExists)
                        visible when (HasTransactionLines)
                            InventoryDocumentType
                                label is "DocumentType"
                        visible when (not HasTransactionLines)
                            InventoryTransactionType
                                label is "DocumentType"
            two column distributed
                InventoryTransaction
                    label is "Transaction"
                    display as text
                Status
                    label is "Status"
                    display as text
