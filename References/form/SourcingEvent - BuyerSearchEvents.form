BuyerSearchEvents is a SearchForm
    title is "SearchEvents"
    Layout
        four column distributed
            EventSearchDocument
                label is "Keyword"
                use text area of 2 lines
            SourcingEvent
                select is SearchForEvents
            Name
            SourcingEventType
                label is "Type"
                select is EventType
            Status
                label is "Status"
            Buyer
            EventReference
                label is "Reference"
            RequireBidBond
            paragraph
                BestAndFinalOffer
                TwoStepBiddingUsed
            CommoditySearch
                label is "CommoditySearch"
                use text area of 1 lines
                show up to 16 characters
            Item
            Category
                label is "Category"
            SubCategory
                label is "SubCategory"
            Contract
                select is SourcingContracts
            Requisition
                select is RequisitionsForEvents
