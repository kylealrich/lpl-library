SourcingEventDocument is a CompositeForm
    is primary
    title is "<DisplayEventNumber>"
    context form is SEHeaderContext
        background is theme color
    restrict action Open.Notified.FinalAward
    restrict action Open.Notified.CreateOutput
    restrict action GenerateIDMAwardDetails
    restrict action PrintIDMAwardDetails
    Actions
        action is Draft.GetSuppliers
            action icon is request
            hide when invalid
        action is Draft.Release
            action icon is release
            hide when invalid
        action is Open.Amended.Release
            action icon is release
            hide when invalid
        navigation is BuyerEventPrint
            action icon is preview
            label is "EventPreview"
            hide when invalid
            valid when (EventExists)
        navigation is BidTabulation
            action icon is preview
            label is "BidTabulation"
            hide when invalid
            valid when (IsNonIDMBidTabulation)
        navigation is ExecutiveSummaryReport
            hide when invalid
        action is previous record
            label is "_"
            mouse over text is "Previous_Record"
            hide when invalid
        action is next record
            label is "_"
            mouse over text is "Next_Record"
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    Event is a Panel
        form is SourcingEventHeader
    Weighting is a Panel
        title is "Weighting<WeightingIndicator>"
        form is SourcingEventWeighting
    Lines is a Panel
        title is "Lines<LineCount>"
        list is SourcingEventLine set.Lines
    Questions is a Panel
        title is "Questions<EventQuestionCount>"
        list is SourcingEventQuestion set.Questions
            helper list is SourcingQuestionsRel.EventHelperQuestions
                action is AttachToEvent
    Terms is a Panel
        title is "Terms<ArticleIndicator>"
        list is SourcingEventArticlesByDisplayRel.EventArticles
            helper list is ArticleRel.SourcingEventArticles
                action is AttachToEventWithTerms
                action is AttachToEventWithoutTerms
    Meetings is a Panel
        title is "Meetings<MeetingCount>"
        list is SourcingEventMeeting set.Meetings
    Attachments is a Panel
        title is "Attachments<AttachmentCount>"
        list is SourcingEventAttachment set.Attachments
    Contacts is a Panel
        title is "Contacts<ContactCount>"
        list is SourcingEventContact set.Contacts
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is SourcingEventComment set.Comment
    AddOnCharges is a Panel
        title is "AddOnCharges<AOCCount>"
        visible when (AllowAddOnCharge)
        list is SourcingEventHeaderAOCRel.SourcingEventAOCs
    Notifications is a Panel
        title is "Notifications<NotificationCount>"
        visible when (DisplayOnPortal)
        list is SourcingEventNotification set.Notifications
            helper list is SupplierContactsRel.SupplierContactHelper
                action is AttachToEvent
    PlanHoldersList is a Panel
        title is "PlanHoldersList<PlanHolderCount>"
        visible when (UsingPlanHoldersList)
        list is SourcingEventPlanHolder set.PlanHoldersListBuyer
            helper list is SupplierContactsRel.SupplierContactHelper
                action is AttachToEventAsPlanHolder
    EventCommodityCodes is a Panel
        title is "EventCommodityCodes<CommodityCount>"
        list is SourcingEventCommodities set.EventCommodityCodes
            helper list is CommodityCodeRel.EventCommodityHelper
                action is AttachToEvent
    QAndA is a MultiListPanel
        title is "Q&A<QAndACount>"
        visible when (DisplayQandA)
        list is SourcingEventQandA set.QAndA
        list is SourcingEventQandA set.AnsweredQAndA
    Amendments is a Panel
        visible when (HasAmendments)
        list is SourcingEventVersion set.ListAmendmentDate
    EventApprovalHistory is a Panel
        visible when (HasWorkunit)
        form is ApprovalHistory
    AwardApprovalHistory is a Panel
        visible when (HasAwardWorkunit)
        form is AwardApprovalHistory
