LeasePaymentBalanceAmortizationContext is a Form
    title is "LeaseBaseCurrencyAmortization"
    Layout
        display as text
            visible when (HasModifications)
                three column distributed
                    column1
                        blank line
                    column2
                        blank line
                    column3
                        text of "Remaining_Lease_Costs_After_Modification"
                            bold
            four column distributed
                column1
                    Company
                    Lease
                    visible when (not IsGASB87)
                        Lease.LeaseClassification
                            label is "Classification"
                    Vendor
                    Lease.BaseCurrency
                column2
                    paragraph
                        Lease.Term
                    Lease.DerivedLeaseRate
                        label is "InterestRate"
                    Lease.PaymentTiming
                    Lease.LeaseAccountingMethod
                        label is "AccountingMethod"
                column3
                    Lease.BeginDate
                    Lease.EndDate
                    Lease.LeaseObligation.BaseAmount.EnteredCurrencyAmount
                        label is "BeginningLiability"
                    Lease.LeaseROUAssetAmount.BaseAmount.EnteredCurrencyAmount
                        label is "BeginningROU"
                column4
                    Lease.InitialDirectCost.BaseAmount.EnteredCurrencyAmount
                        label is "InitialDirectCost"
                    Lease.DerivedLeaseIncentiveBaseCurrency
                        label is "Incentive"
                    visible when (Lease.DownPayment entered)
                        Lease.DownPayment.BaseAmount.EnteredCurrencyAmount
                            label is "DownPayment"
                    visible when (Lease.GuaranteedAmount entered)
                        Lease.GuaranteedAmount.BaseAmount.EnteredCurrencyAmount
                            label is "GuaranteedResidual"
                    visible when (Lease.BargainPurchaseAmount entered)
                        Lease.BargainPurchaseAmount.BaseAmount.EnteredCurrencyAmount
                            label is "BargainPurchase"
