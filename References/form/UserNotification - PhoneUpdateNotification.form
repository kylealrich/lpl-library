PhoneUpdateNotification is a Form
    use for action Update
    use for action View
    use for smartphone
    title is "ViewNotification"
    Layout
        single column
            SourceType
                label is "Type"
                display as text
            visible when (SourceType.Message)
                create stamp.actor
                    label is "From"
            Priority
        header2 of "Description"
        single column
            Description
                no label
                align as label
                display as text
                show up to 40 characters
        header2 of "Details"
        single column
            Details
                no label
                align as label
                display as text
                use text area of 10 lines
        single column
            visible when (not SourceType.Message)
                SourceObject
                    display as text
            visible when (SourceType.Document)
                MimeType
                    display as text
