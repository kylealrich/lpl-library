CreateEventByLineNumber is an ActionForm
    action is CreateEventByLineNumber
    title is "CreateEventFromRequisitionSortedByRequisitionAndLine"
    Layout
        header2 of "NewEventValues"
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            ApplyTemplate
                label is "ApplyEventTemplate"
                select is TemplatesWithNoLines
            ApplyTemplate.Name
                no label
                display as text
        single column
            blank line
            NewName
                label is "Name"
        single column
            NewDescription
                label is "Description"
                use text area
            NewEventReference
                label is "Reference"
        paragraph
            NewSourcingEventType
                label is "Type"
                select is SupplierEventTypes
            NewSourcingEventType.Description
                no label
                display as text
        paragraph
            NewBuyer
                label is "Buyer"
            NewBuyer.Employee.PresentationNameSnapshot
                no label
                display as text
        two column
            NewCurrencyCode
                label is "Currency"
            NewAllowResponseInOtherCurrency
                label is "AllowResponses_in_aDifferentCurrency"
        paragraph
            NewCategory
                label is "Category"
                select is BuyerCategories
            NewCategory.Description
                no label
                display as text
        paragraph
            NewSubCategory
                label is "SubCategory"
                select is BuyerSubCategories
            NewSubCategory.Description
                no label
                display as text
        single column
            NewPostingOptions
                label is "SupplierPortalPostingOptions"
        two column
            NewOutputType
                label is "OutputType"
        two column
            NewCreateAmendments
                label is "CreateAmendments"
            NewAllowSupplierQandA
                label is "AllowSupplierQ&A"
        visible when (not NewOutputType.Service)
            single column
                NewAllowAddOnCharge
                    label is "AllowAddOnCharge"
        two column
            NewRequireBidBond
                label is "RequireBidBond"
            NewBidBondPercent
                label is "BidBondPercent"
        two column
            NewTwoStepBidding
                label is "TwoStepBidding"
            NewBestAndFinalOffer
                label is "Best_andFinalOffer"
        visible when (not NewOutputType.PO)
            visible when (not NewOutputType.NoOutput)
                header2 of "AwardDefaults"
                two column
                    NewDefaultContractType
                        label is "ContractType"
                    NewDefaultContractSubType
                        label is "Subtype"
                two column
                    NewDefaultContractClass
                        label is "ContractClassification"
                    NewDefaultContractSubClass
                        label is "Subclassification"
                two column
                    NewDefaultEffectiveDate
                        label is "EffectiveDate"
                    NewDefaultExpirationDate
                        label is "ExpirationDate"
        visible when (NewOutputType.Standing)
            single column
                NewDefaultScheduleFrequency
                    label is "ScheduleFrequency"
                NewDefaultMaxReleaseNumber
                    label is "MaximumReleaseNumber"
            paragraph
                NewDefaultParticipant.Company
                    label is "ParticipantCompany"
                NewDefaultParticipant.Location
                    label is "Location"
        header2 of "NewEventDates"
        single column
            NewInformalQuote
                label is "DatesNotRequiredOnEvent"
        two column
            NewPreviewDate
                label is "Preview"
            NewOpenDate
                label is "Open"
            NewCloseDate
                label is "Close"
            NewQandAOpenDate
                label is "Q&AOpen"
            NewQandACloseDate
                label is "Q&AClose"
            NewDisputeCloseDate
                label is "DisputeClose"
