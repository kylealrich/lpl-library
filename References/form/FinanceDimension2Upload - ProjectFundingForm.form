ProjectFundingForm is a Form
    title is "ExternalGrant"
    Layout
        visible when (RecordType.Posting)
            visible when (InEnterpriseStructure)
                two column distributed
                    column1
                        FundingType
                two column distributed
                    column1
                        paragraph
                            DateRange.Begin
                                label is "BeginDate"
                            DateRange.End
                                label is "EndDate"
                two column distributed
                    column1
                        paragraph
                            Amount
                            Currency
                visible when (FundingType.InternalFund)
                    single column
                        OffsetAccount
                            compact format
                visible when (FundingType.IntercompanyBilling)
                    single column
                        paragraph
                            CompanyCustomerGroup.ReceivableCompany
                                label is "PayablesCompany"
                            CompanyCustomerGroup.ReceivableCompany.Name
                                display as text
                        OffsetAccount
                            label is "PayablesExpenseFinanceStructure"
                            compact format
                two column distributed
                    column1
                        RevenueCodeBlockOption
                    column2
                        RevenueRecognitionOption
                two column distributed
                    column1
                        RevenuePartialAccount
                            compact format
                    column2
                        RevenueFullAccount
                            compact format
                visible when (FundingType.ExternalGrant)
                    header2 of "Dates"
                    single column
                        paragraph
                            EstimateCloseDate
                            ActualDate
                            SubmitDate
                            NoticeDate
                            ReceiveDate
                            ProposalDate
                two column
                    Department
                    Department.Description
                        no label
                        display as text
                two column
                    Division
                    Division.Description
                        no label
                        display as text
