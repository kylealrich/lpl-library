CustomerUpdateRequest is an ActionForm
    action is CustomerUpdateRequest
    title is "CustomerInformationUpdateRequest"
    disable field options
    Layout
        header4 of "This_request_will_be_routed_for_approval;_after_it_is_approved_your_information_will_be_updated"
        blank line
        header3 of "CustomerInformation"
        single column
            Customer.Name
                label is "Customer"
                display as text
        paragraph
            NewContact
                label is "Contact"
            NewContactTitle
                label is "ContactTitle"
        paragraph
            NewPhoneNumber.InternationalPrefix
                label is "PhoneNumber"
            NewPhoneNumber.SubscriberNumber
                no label
            NewPhoneNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                italics
        paragraph
            NewMobileNumber.MobilePhoneNumber.InternationalPrefix
                label is "MobileNumber"
            NewMobileNumber.MobilePhoneNumber.SubscriberNumber
                no label
            NewMobileNumber.SmsEnabled
                label is "SmsEnabled"
            text of "(InternationalPrefix,MobileNumber,SmsEnabled)"
                italics
        paragraph
            NewFaxNumber.InternationalPrefix
                label is "FaxNumber"
            NewFaxNumber.SubscriberNumber
                no label
            NewFaxNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,FaxNumber,Extension)"
                italics
        single column
            NewEmailAddress
                label is "EmailAddress"
            NewURLAddress
                label is "URLAddress"
            NewTwitterID
                label is "TwitterID"
            NewSocialNetworkID2
                label is "SocialNetworkID2"
            NewSocialNetworkID3
                label is "SocialNetworkID3"
            NewSocialNetworkID4
                label is "SocialNetworkID4"
            NewSocialNetworkID5
                label is "SocialNetworkID5"
            NewTaxID
                label is "TaxID"
        NewPostalAddress
            form is PostalAddressMinimum
