PayablesInvoiceDiscount is a Form
    is primary
    Layout
        visible when (false)
            DiscountAmount.AssignToCurrency
        display as text
            paragraph
                Company
            paragraph
                PayablesInvoice
                PayablesInvoice.CancelSequence
                    label is "CancelSequence"
                PayablesInvoicePayment.PaymentSequence
                    label is "PaymentSequence"
            paragraph
                Vendor
            paragraph
                ProcessLevel
            paragraph
                DiscountType
            paragraph
                Status
            paragraph
                PostDate
            paragraph
                DiscountAmount.CurrencyAmount
                    label is "DiscountAmount"
            paragraph
                DiscountAmount.FunctionalAmount.EnteredCurrencyAmount
                    label is "BaseDiscountAmount"
