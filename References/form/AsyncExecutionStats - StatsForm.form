StatsForm is a Form
    is primary
    title is "AsyncQueueStats"
    Layout
        single column
            visible when (IsEnvDataArea)
                AsyncExecutionStats.DataArea
                    label is "DataArea"
                    display only
            AsyncExecutionStats.AsyncQueueDefinition
                label is "Queue"
                display only
            AsyncExecutionStats.BusinessView
                label is "BusinessView"
                display only
            AsyncExecutionStats.BusinessAction
                display only
        text of "CompletionInformationInSeconds"
            bold
        four column
            CompleteCount
                label is "Count"
                display only
            CompleteSeconds
                label is "Duration"
            AverageCompleteSeconds
                label is "Average"
            LongestCompleteSeconds
                label is "Longest"
        text of "FailureInformationInSeconds"
            bold
        four column
            FailureCount
                label is "Count"
                display only
            FailedSeconds
                label is "Duration"
                display only
            AverageFailedSeconds
                label is "Average"
            LongestFailedSeconds
                label is "Longest"
        text of "CombinedInformationInSeconds"
            bold
        four column
            TotalCount
                label is "Count"
            TotalDurationSeconds
                label is "Duration"
            AverageTotalSeconds
                label is "Average"
            LongestSeconds
                label is "Longest"
