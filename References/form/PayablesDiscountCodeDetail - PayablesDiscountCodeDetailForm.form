PayablesDiscountCodeDetailForm is a Form
    is primary
    title is "DiscountCodeDetail"
    Layout
        paragraph
            VendorGroup
            VendorGroup.Description
                no label
                display as text
        paragraph
            PayablesDiscountCode
                label is "DiscountCode"
            PayablesDiscountCode.Description
                no label
                display as text
        blank line
        paragraph
            Company
            Company.Name
                no label
                display as text
            visible when (LandToExpenseWithSummarizeDistributions)
                text of "<LandToExpenseWithSummarizeMsg>"
                    color of red
        single column
            paragraph
                DiscountAccount
                    compact format
                DiscountAccount.GeneralLedgerChartAccount.AccountDescription
                    display as text
            visible when (not VendorGroup.BusinessGroup.FinanceEnterpriseGroup.FundAccounting)
                Allocation
