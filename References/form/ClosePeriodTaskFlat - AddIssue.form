AddIssue is an ActionForm
    action is AddIssue
    title is "AddIssue"
    Layout
        header3 of "_"
        single column
            PrmIssueSummary
                label is "Summary"
            PrmIssueDescription
                label is "Description"
                display as required
            PrmResolutionRequiredForTaskCompletion
                label is "ResolutionRequired_for_TaskCompletion"
        header2 of "AssignIssue"
        single column
            paragraph
                PrmFinanceTeam
                    label is "Team"
                    select is FinanceTeamSelect
                    show up to 10 characters
                PrmFinanceTeam.Description
                    no label
                    display as text
            paragraph
                PrmTaskIssueOwner
                    label is "PersonResponsible"
                    compact format
                    select is FinanceTeamMemberActiveSelect
                PrmTaskIssueOwner.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                    no label
                    display as text
