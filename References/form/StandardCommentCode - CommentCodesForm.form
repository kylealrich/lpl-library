CommentCodesForm is a Form
    is primary
    title is "CommentCodes"
    Layout
        paragraph
            ProcurementGroup
                select is ProcurementGroup
            ProcurementGroup.Description
                no label
                display as text
        paragraph
            StandardCommentCode
                label is "CommentCode"
        paragraph
            IsoLocale
                label is "Locale"
                compact format
        paragraph
            Description
        paragraph
            StandardCommentPrintCode
                label is "PrintOption"
        header2 of "CommentText"
        paragraph
            CommentName
                label is "Name"
        paragraph
            CommentText
                label is "Text"
                use text area of 12 lines
        paragraph
            Attachment.File
                label is "Attachment"
