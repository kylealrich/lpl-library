ReturnLineDetails is a Form
    is primary
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            CustomerOrderReturn
                label is "Authorization"
                display as text
            CustomerOrderReturn.Status
                display as text
        paragraph
            CustomerOrderReturnLine
                label is "Line"
                display as text
        paragraph
            CustomerOrderReturnLine.Item
                display as text
        paragraph
            visible when (CustomerOrderReturnLine.ItemLocation.BinTracked)
                CustomerOrderReturnLineDetail.Bin
                    label is "Bin"
        paragraph
            visible when (CustomerOrderReturnLine.ItemLocation.IsLotTracked)
                CustomerOrderReturnLineDetail.Lot
                    label is "Lot"
        paragraph
            visible when (CustomerOrderReturnLine.ItemLocation.IsLotTracked)
                CustomerOrderReturnLineDetail.Sublot
                    label is "Sublot"
        paragraph
            visible when (CustomerOrderReturnLine.ItemLocation.IsSerialTracked)
                CustomerOrderReturnLineDetail.Serial
                    label is "Serial"
        paragraph
            CustomerOrderReturnLineDetail.UnitOfMeasure
                label is "Unit_ofMeasure"
                display as text
        paragraph
            visible when (not CustomerOrderReturnLine.ItemLocation.IsSerialTracked)
                Quantity
        paragraph
            visible when (CustomerOrderReturnLine.Item.IsCatchWeightItem)
                CatchWeightQuantity
                CustomerOrderReturnLine.Item.StockUOM
                    no label
                    display as text
