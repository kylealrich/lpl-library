AssetItemTransferForm is a Form
    is primary
    title is "AssetItemTransfer"
    Layout
        paragraph
            Asset
                display as text
            Asset.Description
                no label
                display as text
            Asset.DerivedStatus
                no label
                display as text
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                    display as text
                Asset.AssetLease.LeaseCompany.Name
                    no label
                    display as text
            paragraph
                Asset.AssetLease.Lease
                    display as text
                Asset.AssetLease.Lease.Description
                    no label
                    display as text
        paragraph
            Asset.TagNumber
                display as text
        paragraph
            AssetTransfer.TransferDate
                display as text
            AssetTransfer.TransferStatus
                display as text
        paragraph
            AssetTransfer.CreationDate
                display as text
            AssetTransfer.CreatedBy
                display as text
        blank line
        paragraph
            ItemNumber
                display as text
            Description
                display as text
        paragraph
            PurchaseDate
                display as text
        paragraph
            BarCode
                display as text
        paragraph
            PONumber
                label is "PurchaseOrder"
                display as text
            PORelease
                no label
                display as text
            POCode
                no label
                display as text
        paragraph
            Vendor
                display as text
            VendorName
                no label
                display as text
            PayablesInvoice
                display as text
        paragraph
            Project
                display as text
        blank line
        two column
            column1
                header3 of "TransferFrom"
                ItemQuantity
                    display as text
                TransactionItemCost
                    label is "Cost"
                    display as text
                TransactionItemTax
                    label is "Tax"
                    display as text
                LocationDetail
                    display as text
            column2
                header3 of "TransferTo"
                visible when (AssetTransfer.FullTransfer)
                    ToItemQuantity
                        display as text
                visible when (AssetTransfer.PartialTransfer)
                    ToItemQuantity
                ToTransactionItemCost
                    label is "ToCost"
                    display as text
                ToTransactionItemTax
                    label is "ToTax"
                    display as text
                ToLocationDetail
                    display as text
