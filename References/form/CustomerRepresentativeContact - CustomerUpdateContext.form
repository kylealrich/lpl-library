CustomerUpdateContext is a Form
    Actions
        action is refresh
            label is "_"
    Layout
        header2 of "CustomerInformation"
        visible when (IsPrimary)
            paragraph
                CustomerRepresentative
                    label is "CustomerNumber"
                    display as text
                CustomerRepresentative.CustomerName
                    no label
            single column
                CustomerRepresentative.DunAndBradstreetNumber
                    label is "Dun&Bradstreet"
                CustomerRepresentative.TaxIdGroup
                    label is "TaxID"
        visible when (not IsPrimary)
            display as text
                paragraph
                    CustomerRepresentative
                        label is "CustomerNumber"
                    CustomerRepresentative.CustomerName
                        no label
                single column
                    CustomerRepresentative.DunAndBradstreetNumber
                        label is "Dun&Bradstreet"
                    CustomerRepresentative.TaxIdGroup
                        label is "TaxID"
        header2 of "RegistrationStatus"
        paragraph
            text of "RegistrationStatus:<RegistrationStatus>"
                center
                bold
        paragraph
            text of "<SummaryText>"
                italics
