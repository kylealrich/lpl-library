WorkFileImportLayoutForm is a Form
    is primary
    title is "Import_toWorkfile"
    Layout
        WorkDirectory
        header3 of "Select_aWorkfileBusinessClass"
        single column
            BusinessClass
                label is "WorkfileBusinessClass"
                select is WorkFileClasses
        header3 of "Select_aWorkFileName"
        single column
            WorkFileName
        header3 of "SourceFile"
        single column
            FileFormat
                display as horizontal radio buttons
            FileName
        header3 of "ImportOptions"
        single column
            ValidateOnly
            NormalizeRecords
        DelimitersAndPatterns
