GL is a Form
    title is "GlobalLedger"
    Layout
        header2 of "GlobalLedgerAccountCodes"
        visible when (not IsReceivableCompany)
            paragraph
                RGLCode
                    label is "*AccountsReceivableCode"
                RGLCodeDescription
                    label is "Description"
                RGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                ReceivedNotAppliedRGLCode
                    label is "*ReceivedNotAppliedCode"
                ReceivedNotAppliedRGLCodeDescription
                    label is "Description"
                ReceivedNotAppliedRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                FinanceChargeRGLCode
                    label is "FinanceChargeCode"
                FinanceChargeRGLCodeDescription
                    label is "Description"
                FinanceChargeRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                PrepaymentRGLCode
                    label is "*PrepaymentCode"
                PrepaymentRGLCodeDescription
                    label is "Description"
                PrepaymentRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                AdminFeeCode
                    label is "FinanceChargeAdminFeeCode"
                AdminFeeCodeDescription
                    label is "Description"
                AdminFeeCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
        visible when (IsReceivableCompany)
            paragraph
                ReceivableGeneralLedgerCode
                    label is "*AccountsReceivableCode"
                    select is ARCodes
                ReceivableGeneralLedgerCode.Description
                    no label
                    display as text
                ReceivableGeneralLedgerCode.DistributionAccount
                    no label
                    compact format
            paragraph
                ReceivedNotAppliedReceivableGeneralLedgerCode
                    label is "*ReceivedNotAppliedCode"
                    select is ARCodes
                ReceivedNotAppliedReceivableGeneralLedgerCode.Description
                    no label
                    display as text
                ReceivedNotAppliedReceivableGeneralLedgerCode.DistributionAccount
                    no label
                    compact format
            paragraph
                FinanceChargeReceivableGeneralLedgerCode
                    label is "FinanceChargeCode"
                    select is ARCodes
                FinanceChargeReceivableGeneralLedgerCode.Description
                    no label
                    display as text
                FinanceChargeReceivableGeneralLedgerCode.DistributionAccount
                    no label
                    compact format
            paragraph
                PrepaymentReceivableGeneralLedgerCode
                    label is "*PrepaymentCode"
                    select is ARCodes
                PrepaymentReceivableGeneralLedgerCode.Description
                    no label
                    display as text
                PrepaymentReceivableGeneralLedgerCode.DistributionAccount
                    no label
                    compact format
            paragraph
                ProformaPrepaymentReceivableGeneralLedgerCode
                    label is "ProformaPrepaymentCode"
                    select is ARCodes
                ProformaPrepaymentReceivableGeneralLedgerCode.Description
                    no label
                    display as text
                ProformaPrepaymentReceivableGeneralLedgerCode.DistributionAccount
                    no label
                    compact format
            paragraph
                ProformaTaxInvoiceCode
                ProformaTaxInvoiceCode.Description
                    no label
                    display as text
                ProformaTaxInvoiceCode.DistributionAccount
                    no label
                    compact format
            paragraph
                AdminFeeReceivableGeneralLedgerCode
                    label is "FinanceChargeAdminFeeCode"
                    select is ARCodes
                AdminFeeReceivableGeneralLedgerCode.Description
                    no label
                    display as text
                AdminFeeReceivableGeneralLedgerCode.DistributionAccount
                    no label
                    compact format
        blank line
        header2 of "AccrualGlobalLedgerInterfaceOptions"
        three column
            column1
                DetailGLTransPerPayment
                    label is "DetailPayments"
            column2
                DetailGLTransPerFinanceCharge
                    label is "DetailFinanceCharges"
        header2 of "DetailFinanceStructure"
        three column distributed
            column1
                DetailedInvoiceAccrualDistributions
            column2
                DetailedCashDistributions
            column3
                DetailedRNADistributions
                    label is "Allow_Detailed_RNA_Distributions_and_Match_Finance_Structure_For_Applications"
                    when value changed
                        DetailFinanceStructureOptions =  blank
        visible when (DetailedRNADistributions)
            DetailFinanceStructureOptions
                label is "FinanceStructureSegmentsForApplicationMatching"
                compact format
