MobileOrderAddOnChargesDetail is a Form
    title is "AddOnChargesDetails"
    restrict action Released.Create
    restrict action Unreleased.Create
    restrict action Unreleased.Delete
    restrict action Released.Delete
    Actions
        action is Unreleased.Delete
            hide when invalid
        action is save
            label is "_"
    Layout
        single column
            paragraph
                CustomerOrder.Company
                    label is "Company"
                    display as text
                CustomerOrder.Company.Name
                    no label
                    display as text
            CustomerOrder
                label is "CustomerOrder"
                display as text
            CustomerOrder.Status
                display as text
            paragraph
                CustomerOrder.InventoryLocation
                    label is "Location"
                    display as text
                CustomerOrder.InventoryLocation.Name
                    no label
                    display as text
            visible when (IsCustomerOrderLine)
                paragraph
                    CustomerOrderLine
                        label is "Line"
                        display as text
                paragraph
                    CustomerOrderLine.Item
                        display as text
                    CustomerOrderLine.ItemDescription
                        no label
                        display as text
                paragraph
                    CustomerOrderLine.LineType
                        display as text
                    CustomerOrderLine.OrderQuantity
                        display as text
                    CustomerOrderLine.SellUOM
                        display as text
            blank line
            paragraph
                CustomerOrderAddOnCharge
                    label is "Sequence"
                    display as text
            blank line
            paragraph
                Miscellaneous
                    label is "AddOnCharge"
                    compact format
            paragraph
                UnitPrice
                    label is "UnitPrice"
            paragraph
                PricePercent
                    label is "PricePercent"
            paragraph
                UnitCost
                    label is "UnitCost"
            paragraph
                CostPercent
                    label is "CostPercent"
            paragraph
                OrderDiscount
                    label is "OrderDiscount"
            visible when (IsCustomerOrderLine)
                header2 of "AdditionalAddOnCharges"
                blank line
                paragraph
                    SalesAccount
                        label is "SalesAccount"
                        compact format
                paragraph
                    CostOfGoodsSoldAccount
                        label is "CostOfGoodsSoldAccount"
                        compact format
                paragraph
                    OffsetAccount
                        label is "OffsetAccount"
                        compact format
