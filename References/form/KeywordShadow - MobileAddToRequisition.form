MobileAddToRequisition is an ActionForm
    action is AddToRequisition
    use for smartphone
    title is "AddItem_toRequisition<RequesterRel.CurrentRequisitionForRQC>"
    Layout
        single column
            visible when (UseLinkedImage)
                ItemRel.ImageURL
                    display as image
            visible when (not UseLinkedImage)
                DerivedPicture
                    no label
                    align as label
                    display as full image up to 3 lines
        paragraph
            Item
                display as text
            ItemDescription
                no label
                display as text
        single column
            paragraph
                visible when (Description2 entered)
                    Description2
                        display as text
                ItemRel.StockUOM
                    display as text
            visible when (Description3 entered)
                Description3
                    label is "LongDescription"
                    display as text
                    use text area of 3 lines
                visible when (RecallProductItemForItem)
                    DerivedRecallNotices
                        no label
                        display as text
                        display as tag
                            color of red
        visible when (RequisitionExists)
            paragraph
                PrmCompany
                    label is "Company"
                    display as text
                    initial value is RequesterRel.CurrentCompanyForRQC
                PrmRequisition
                    label is "Requisition"
                    display as text
                    initial value is RequesterRel.CurrentRequisitionForRQC
        paragraph
            PrmQuantity
                label is "Quantity"
                initial value is "1"
        paragraph
            PrmUOM
                label is "UOM"
                select is MobileValidUnitsOfMeasure
                initial value is DerivedCostUOM
        paragraph
            visible when (not IsCostUpdateProhibited)
                PrmTransactionUnitCost
                    label is "UnitCost"
            visible when (IsCostUpdateProhibited)
                PrmTransactionUnitCost
                    label is "UnitCost"
                    display as text
        display as text
            paragraph
                DisplayItemAvailableSOH
                    label is "Stock_onHand"
                DefaultItemType
                    label is "ItemType"
            paragraph
                visible when (ItemRel.Reference1 entered)
                    ItemRel.Reference1
                visible when (ItemRel.Reference2 entered)
                    ItemRel.Reference2
            paragraph
                visible when (ItemRel.Manufacturer.ManufacturerCode entered)
                    ItemRel.Manufacturer.ManufacturerCode
                    ItemRel.Manufacturer.Description
                        label is "Name"
                    ItemRel.Manufacturer.ManufacturerDivision
                        label is "Division"
                visible when (ItemRel.ManufacturerNumber entered)
                    ItemRel.ManufacturerNumber
                        label is "Number"
        single column
            visible when (HasContract)
                ContractRel.Contract
        visible when (false)
            paragraph
                PrmFromMobile
                    initial value is true
