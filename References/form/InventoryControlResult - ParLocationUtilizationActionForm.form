ParLocationUtilizationActionForm is an ActionForm
    action is CreateParUtilizationReport
    title is "ParLocationUtilization"
    Layout
        single column
            Description
                label is "ReportDescription"
            paragraph
                ParametersParLocationUtilization.InventoryCompany
                    display as required
                    when value changed
                        refresh ParametersParLocationUtilization.IsMobileSupplyChainEnabled
                        refresh ParametersParLocationUtilization.TransientProcessAllLocations
                ParametersParLocationUtilization.InventoryCompany.Name
                    no label
                    display as text
            visible when (ParametersParLocationUtilization.IsMobileSupplyChainEnabled)
                ParametersParLocationUtilization.TransientProcessAllLocations
                    when value changed
                        refresh ParametersParLocationUtilization.ReportGroup
                        refresh ParametersParLocationUtilization.InventoryLocation
        three column
            visible when (ParametersParLocationUtilization.TransientProcessAllLocations)
                column1
                    ParametersParLocationUtilization.ReportGroup
                        display only
                    ParametersParLocationUtilization.ReplenishDays
                column2
                    text of "\\or"
                        bold
                column3
                    paragraph
                        ParametersParLocationUtilization.InventoryLocation
                            label is "ParLocation"
                            display only
                            select is ParAndExchangeCartLocationsSelect
                        ParametersParLocationUtilization.InventoryLocation.Name
                            no label
                            display as text
            visible when (not ParametersParLocationUtilization.TransientProcessAllLocations)
                column1
                    ParametersParLocationUtilization.ReportGroup
                    ParametersParLocationUtilization.ReplenishDays
                        display as required
                column2
                    text of "\\or"
                        bold
                column3
                    paragraph
                        ParametersParLocationUtilization.InventoryLocation
                            label is "ParLocation"
                            select is ParAndExchangeCartLocationsSelect
                        ParametersParLocationUtilization.InventoryLocation.Name
                            no label
                            display as text
        paragraph
            visible when (ParametersParLocationUtilization.TransientPreviousMonthOnly)
                ParametersParLocationUtilization.DateRange.Begin
                    label is "FromDate"
                    display only
                    display as required
                ParametersParLocationUtilization.DateRange.End
                    label is "ToDate"
                    display only
                    display as required
            visible when (not ParametersParLocationUtilization.TransientPreviousMonthOnly)
                ParametersParLocationUtilization.DateRange.Begin
                    label is "FromDate"
                    display as required
                ParametersParLocationUtilization.DateRange.End
                    label is "ToDate"
                    display as required
        single column
            ParametersParLocationUtilization.TransientPreviousMonthOnly
            ParametersParLocationUtilization.MinimumSamples
            ParametersParLocationUtilization.SortOption
            ParametersParLocationUtilization.PrintOption
            ParametersParLocationUtilization.UpdateOption
            ParametersParLocationUtilization.ReportDistributionGroup
