MobileContractLineContext is a Form
    title is "ContractLineContext"
    Layout
        display as text
            paragraph distributed
                button of "<Contract>"
                    link is Contract
                    label is "Contract"
                    display as link
                Contract.Name
                Contract.Supplier.SupplierName
                    label is "Supplier"
        single column
            visible when (ContractLineExists)
                visible when (ContractHasAPurchaseType)
                    visible when (not Contract.ContractTemplate)
                        visible when (DistWithMfgLineClosed)
                            ManufacturerLineClosedMessage
                                no label
                                display as tag
                                    color of red
                        visible when (OtherErrorsExist)
                            LineErrorsExistsMessage
                                no label
                                display as tag
                                    color of red
