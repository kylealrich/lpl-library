Main is a Form
    Layout
        three column distributed
            column1
                ReceivablePaymentRel.ReceivableProcessLevel
                    label is "ProcessLevel"
                    display as text
                ReceivablePaymentRel.ReturnToMakerTransactionAmount
                    label is "PaymentAmount"
                    display as text
                visible when (IsCustomerPayment)
                    ReceivablePaymentRel.AppliedAmount
                        label is "AppliedAmount"
                        display as text
                paragraph
                    visible when (IsCustomerPayment)
                        RevalueCurrencyTransactions
            column2
                ReceivablePaymentRel.GeneralLedgerDate
                    label is "PaymentPostDate"
                    display as text
                visible when (Status.UnreleasedRtm)
                    Description
                        label is "Description"
                visible when (Status.ReleasedRtm)
                    Description
                        label is "Description"
                        display as text
                visible when (IsUnreleasedCustomerPayment)
                    TransientTextCode
                        compact format
                        select is CompanyRTMPaymentLanguageTextRel.ReturntoMakerTextCodeMaintenance
                visible when (Status.ReleasedRtm)
                    TransientTextCode
                        display as text
                        compact format
                paragraph
                    visible when (IsCustomerPayment)
                        AdjustAmount
                            label is "TotalAdjustments"
                            display as text
                    button of "Comments"
                        visible when (HasComments)
                        sub form is Comments
            column3
                visible when (Status.UnreleasedRtm)
                    paragraph
                        GeneralLedgerDate
                            label is "ReturnPostDate"
                visible when (Status.ReleasedRtm)
                    paragraph
                        GeneralLedgerDate
                            label is "ReturnPostDate"
                            display as text
                paragraph
                    visible when (Status.UnreleasedRtm)
                        AdditionalAmount
                            label is "ServiceChargeAmount"
                    visible when (Status.ReleasedRtm)
                        AdditionalAmount
                            label is "ServiceChargeAmount"
                            display as text
                    visible when (Customer entered)
                        visible when (Status.UnreleasedRtm)
                            ChargeBank
                                label is "BillServiceCharge"
                        visible when (Status.ReleasedRtm)
                            ChargeBank
                                label is "BillServiceCharge"
                                display as text
                        visible when (not RTMPaymentExists)
                            Billback
                paragraph
                    visible when (Status.UnreleasedRtm)
                        FeeAmount
                    visible when (Status.ReleasedRtm)
                        FeeAmount
                            display as text
                    visible when (Customer entered)
                        visible when (Status.UnreleasedRtm)
                            BillFee
                        visible when (Status.ReleasedRtm)
                            BillFee
                                display as text
        header2 of "Accounts"
        visible when (Status.UnreleasedRtm)
            paragraph
                CreditAccount
                    label is "ServiceChargeCreditAccount"
                    compact format
        visible when (Status.ReleasedRtm)
            paragraph
                CreditAccount
                    label is "ServiceChargeCreditAccount"
                    display as text
                    compact format
        visible when (Status.UnreleasedRtm)
            paragraph
                DebitAccount
                    label is "ServiceChargeDebitAccount"
                    compact format
        visible when (Status.ReleasedRtm)
            paragraph
                DebitAccount
                    label is "ServiceChargeDebitAccount"
                    display as text
                    compact format
        visible when (Status.UnreleasedRtm)
            paragraph
                FeeCreditAccount
                    compact format
        visible when (Status.ReleasedRtm)
            paragraph
                FeeCreditAccount
                    display as text
                    compact format
        visible when (Status.UnreleasedRtm)
            paragraph
                FeeDebitAccount
                    compact format
        visible when (Status.ReleasedRtm)
            paragraph
                FeeDebitAccount
                    display as text
                    compact format
