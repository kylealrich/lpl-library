LPLViewerForm is a Form
    title is "LPLFor<SecurityClass>"
    disable field options
    Layout
        header2 of "_"
        two column distributed
            column1
                SecurityClass
                    no label
                    header1
                    bold
                    display as text
                    raise yellow alert when (InActive)
                        mouse over text is "Inactive"
                    raise green alert when (not InActive)
                        mouse over text is "Active"
                paragraph
                    visible when (CopiedFrom entered)
                        CopiedFrom
                            header3
                            display as text
            column2
                DerivedLastChange
                    no label
                    display as text
                paragraph
                    button of "Extend"
                        action is Extend
                        is primary
                    button of "Copy"
                        action is Copy
                    button of "Activate"
                        visible when (InActive)
                        action is Activate
                    button of "Deactivate"
                        visible when (not InActive)
                        action is Deactivate
                paragraph
                    button of "ManageSecurityClass"
                        link is ConfigurationConsoleNav
                        display as link
                    visible when (not AssignedToSecurityRole)
                        MissingSecurityWarning
                            no label
                            display as tag
                                color of red
        single column
            LPL
                no label
                display as text
                use text area of 30 lines
