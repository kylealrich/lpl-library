EmailConnectionForm is a Form
    title is "EmailConnection"
    Layout
        single column
            PfiConfiguration
        two column
            PfiEmailConfiguration.MailServer
            PfiEmailConfiguration.EnableTLS
        single column
            PfiEmailConfiguration.MailSmtpConnectiontimeout
                label is "SMTPConnectionTimeout(Seconds)"
            PfiEmailConfiguration.MailSmtpTimeout
                label is "SMTPTimeout(Seconds)"
            AuthType
            PfiEmailConfiguration.User
                label is "UserName"
            visible when (AuthType.Basic)
                PfiEmailConfiguration.Password
            visible when (AuthType.OAuth2)
                OAuth2Configuration
            PfiEmailConfiguration.BaseURL
                label is "EmailActionsBaseURL"
            text of "Example:<BaseURLExample>"
                italics
            button of "TestConnection"
                action is TestConnection
