MobileShipmentLoadContextForm is a Form
    title is "ShipmentLoadConsolidation"
    Layout
        visible when (RecordExists)
            header2 of "ShipmentDetails"
                collapsible
                    initially expanded
                display as text
                    Company.DerivedCompanyDisplay
                        label is "Company"
                    InventoryLocation.DerivedInventoryLocationIDName
                        label is "Location"
                    ShipmentLoadConsolidation
                        label is "LoadNumber"
                    visible when (DisplayDerivedNumberOfContainer)
                        DerivedNumberOfContainer
                            label is "MaxNumberOf_Container_Units"
                    visible when (EditableMaxContainer)
                        MaxContainer
                            label is "NumberOf_Container_Units"
                    visible when (DisplayMaxContainer)
                        MaxContainer
                            label is "NumberOf_Container_Units"
                    NumberOfFilledContainerUnits
                        label is "NumberOfFilledContainerUnits"
                    StatusMsgTagField
                        label is "Status"
                        display as tag
                            color of blue when (IsUnreleased)
                            color of blue when (IsForRelease)
                            color of green when (IsReleased)
                            color of green when (IsClosed)
            header2 of "Tracking"
                collapsible
                    initially expanded
                paragraph
                    Container
                        show up to 10 characters
                    Container.Description
                        no label
                        display as text
                single column
                    WarehouseStorageLocation
                        label is "StagingLocationAfterReleased"
                        select is StagingWarehouseStorageLocationRel.ActiveWarehouseStorageLocations
                paragraph
                    ShipTo
                        label is "DeliverTo"
                        show up to 10 characters
                    ShipTo.Name
                        no label
                        display as text
                visible when (HasVehicle)
                    paragraph
                        Vehicle
                            show up to 10 characters
                        Vehicle.Description
                            no label
                            display as text
                paragraph
                    FromShipDate
                    ToShipDate
            header2 of "Capacity"
                collapsible
                    initially collapsed
                display as text
                    text of "CurrentLoad"
                        header4
                        bold
                    paragraph
                        DerivedOrderLoadWeight
                            label is "Weight"
                            raise yellow alert when (CapacityYellowAlert)
                                mouse over text is "CurrentLoadIsNearTheLoadLimit"
                        DerivedOrderLoadVolume
                            label is "Volume"
                            raise yellow alert when (CapacityYellowAlert)
                                mouse over text is "CurrentLoadIsNearTheLoadLimit"
                    text of "LoadLimit"
                        header4
                        bold
                    paragraph
                        DerivedVehicleTypeWeightCapacity
                            label is "Weight"
                        DerivedVehicleTypeVolumeCapacity
                            label is "CubicVolume"
                    text of "ContainerUnitCapacity"
                        header4
                        bold
                    paragraph
                        DerivedContainerWeightCapacityAndWeightUOM
                            label is "Weight"
                        DerivedContainerVolumeCapacityAndVolumeUOM
                            label is "Volume"
                    text of "VehicleCapacity"
                        header4
                        bold
                    paragraph
                        visible when (HasVehicle)
                            DerivedVehicleTypeWeightCapacityAndWeightUOM
                                label is "Weight"
                            DerivedVehicleTypeVolumeCapacityCapacityAndVolumeUOM
                                label is "Volume"
