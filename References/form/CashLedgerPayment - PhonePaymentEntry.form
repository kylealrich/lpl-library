PhonePaymentEntry is a Form
    title is "PaymentEntry"
    Layout
        visible when (RecordExists)
            display as text
                two column table
                    column1
                        CashCode.CashCodeAndDescription
                            label is "CashCode"
                        CashLedgerPayment.BankTransactionCode.BankTransactionCodeName
                            label is "TransactionCode"
                        visible when (IsUnreleased)
                            DistributionTotal
                                label is "AppliedAmount"
                        visible when (UsingBankCurrencyPosting)
                            BankAmount
                    column2
                        Reference
                            label is "ReferenceNumber"
                        paragraph
                            BankCheckAmountUnsigned
                                label is "Amount"
                            CashCode.Currency
                                no label
                        visible when (IsUnreleased)
                            BalanceAmount
                                label is "Balance"
                paragraph
                    visible when (BudgetEditInProgress)
                        text of "BudgetEditsInProgress"
                            bold
                            color of red
                    visible when (BudgetEditFailure)
                        text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                            bold
                            color of red
                    visible when (IsBatchApproved)
                        CashLedgerBatchApproval
                    visible when (CashLedgerTransactionIdentifierExists)
                        CashLedgerTransactionIdentifier
