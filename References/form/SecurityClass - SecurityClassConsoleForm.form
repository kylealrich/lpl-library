SecurityClassConsoleForm is a Form
    title is "SecurityClassDetails"
    Layout
        header2 of "_"
        two column distributed
            column1
                SecurityClass
                    raise yellow alert when (InActive)
                        mouse over text is "Inactive"
                    raise green alert when (not InActive)
                        mouse over text is "Active"
                paragraph
                    Description
                    BaseClass
                        display only
                    CopiedFrom
                        display only
            column2
                DerivedLastChange
                    no label
                    display as text
                paragraph
                    button of "Copy"
                        action is Activate
                        is primary
                    button of "Activate"
                        visible when (InActive)
                        action is Activate
                    button of "Deactivate"
                        visible when (not InActive)
                        action is Deactivate
        visible when (StandardTemplate)
            paragraph
                LPL
                    no label
                    display only
                    use text area of 30 lines
        visible when (not StandardTemplate)
            paragraph
                LPL
                    no label
                    use text area of 30 lines
