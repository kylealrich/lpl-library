PaymentTransfer is an ActionForm
    action is Open.PaymentTransfer
    Layout
        display as text
            two column
                paragraph
                    Company
                    Company.Name
                        no label
                    Company.Currency
                        no label
                paragraph
                    ReceivablePaymentHeader
                        label is "Batch"
                    ReceivablePaymentHeader.Currency
                        no label
            two column
                PaymentNumber
                    label is "Payment"
                paragraph
                    Customer
                    Customer.Name
                        no label
            two column
                BaseAmount
                    label is "Amount"
                paragraph
                    BankEntity
                        label is "M\\I\\C\\RNumber"
                    BankAccountNumber
                        no label
            blank line
        paragraph
            ToCustomer
                select is CustomerContextCompanyCustomerSelectList
            ToCustomer.Name
                no label
                display as text
        single column
            ReassignDate
            ReassignAmount
        paragraph
            ToReceivableReasonCode
                select is ReceivableReasonCodeTransferList
            ToReceivableReasonCode.Description
                no label
                display as text
        paragraph
            ToProject
            ToProject.Description
                no label
                display as text
        visible when (Company.CashOperatorRequired)
            single column
                ToOperator
