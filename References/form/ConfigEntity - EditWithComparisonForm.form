EditWithComparisonForm is an ActionForm
    action is EditWithComparison
    title is "ComparisonEdit"
    Layout
        single column
            paragraph
                Name
                    no label
                    header3
                    bold
                    display as text
                ConfigurationCardDisplayType
                    no label
                    display as text
                Status
                    no label
                    display as tag
                        color of red when (Status.Invalid)
                        color of green when (Status.Active)
            HideDiff
                right align
        single column
            visible when (not HideDiff)
                visible when (not IsSecurityClass)
                    text of "<CompareHeaderMF>"
                        header4
                        bold
                visible when (IsSecurityClass)
                    text of "<SecurityCompareHeaderMF>"
                        header4
                        bold
                CompareLPL
                    no label
                    display only
                    compare with CurrentFormattedLPL
            LPL
                no label
                use text area of 30 lines
        visible when (HasErrorText)
            paragraph
                ErrorText
                    use text area of 5 lines
