AssetReport is an ActionForm
    action is AssetReport
    Layout
        header2 of "SelectionOptions"
        paragraph
            Book
                label is "Book"
            Book.Description
                no label
                display as text
            PrelimClose
                label is "PreliminaryClose"
        paragraph
            FromDate
                label is "FromInServiceDate"
            ToDate
                label is "ToInServiceDate"
        paragraph
            Company
                label is "Company"
                select is Companies
            Company.CompanyName
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            Classification
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division.Description
                no label
                display as text
        paragraph
            AssetType
                label is "Type"
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        paragraph
            Property
            Category
        paragraph
            Disposals
        header2 of "AdditionalOptions"
        paragraph
            ZeroDepr
                label is "ZeroCurrentYearDepr"
        paragraph
            FullyDepr
                label is "FullyDepreciated"
            Inactive
        paragraph
            Wip
                label is "W\\I\\P"
            TaxExempt
        paragraph
            Simulated
            Used
        paragraph
            Asset
                select is AllAssets
            Asset.Description
                no label
                display as text
        paragraph
            AssetLease.LeaseCompany
                label is "_orLease"
            AssetLease.LeaseCompany.Name
                no label
                display as text
            AssetLease.Lease
                no label
        paragraph
            TagNumber
                label is "Tag"
        paragraph
            AssetGroup
                select is AssetGroups
            AssetGroup.Description
                no label
                display as text
        paragraph
            TransactionDimension
                label is "TransactionDimensions_orAssetDimensionGroup"
                compact format
            AstAuGroup
                no label
        header2 of "OutputOptions"
        paragraph
            PageBreak
        single column
            header3 of "PrintTotals"
        single column
            header4 of "Sequence"
            blank line
            paragraph
                LeaseOption
                    label is "Lease"
            paragraph
                LocOption
                    label is "Location"
            paragraph
                DivOption
                    label is "Division"
            paragraph
                TypeOption
                    label is "Type\\,Sub"
            AstgrpOption
                label is "AssetGroup"
            paragraph
                AssetOption
                    label is "Asset"
            header4 of "Miscellaneous"
            blank line
            paragraph
                CatOption
                    label is "Category"
            paragraph
                PropOption
                    label is "Property"
            paragraph
                InservOption
                    label is "In\\-\\Service"
            paragraph
                PrintDetailReport
                    label is "Detail"
        blank line
        paragraph
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AssetReportReport_RDG
                AssetDetailReport_RDG
                AssetSummaryReport_RDG
            column2 of 25%
                AssetReportReport_XPT
                AssetDetailReport_XPT
                AssetSummaryReport_XPT
