MainForm is a Form
    Layout
        visible when (not RecordExists)
            two column distributed
                paragraph
                    HROrganization
                    HROrganization.Name
                        no label
                        display as text
                paragraph
                    DistributionClerk
                    DistributionClerk.Employee.PresentationNameSnapshot
                        no label
                        display as text
        two column distributed
            paragraph
                Company
                    select is DistributionManagementCompanySelectList
                Company.Name
                    no label
                    display as text
        header3 of "Contact_Information"
        three column distributed
            display as text
                column1
                    EmployeeRel.UseForWorkPhone.ContactMethod
                        label is "ContactMethod"
                    DerivedPhoneNumberDisplay
                    DerivedEmailAddress
                    DerivedIMAddress
                    DerivedWhenAvailable
                column2
                    text of "_"
                    DerivedIsWorkPhone
                    DerivedIsWorkEmail
                    DerivedIMNetwork
                column3
                    text of "_"
                    DerivedIsPhonePreferredContact
                    DerivedIsEmailPreferredContact
                    DerivedIsIMPreferredContact
