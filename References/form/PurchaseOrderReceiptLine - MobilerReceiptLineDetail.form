MobilerReceiptLineDetail is a Form
    title is "Details"
    Layout
        two column distributed
            EnteredReceivedQuantity
                label is "QuantityReceived"
            visible when (IsCatchWeightItem)
                CatchWeightQuantity
                    label is "Quantity"
            CancelBackorder
            ReceivedUOM
                label is "UOM"
                select is ValidBuyUnitsOfMeasure
            visible when (IsCatchWeightItem)
                CatchWeightUOM
                    label is "UOM"
            InspectionRequired
        single column
            ShipToLocation
                label is "ReceivedLocation"
                show up to 10 characters
