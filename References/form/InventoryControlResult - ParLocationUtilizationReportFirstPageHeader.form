ParLocationUtilizationReportFirstPageHeader is a Form
    title is "ParLocationUtilization"
    Layout
        three column grid
            column1
                text of "Date:<PrintDate>"
                    bold
                    align as label
            column2
                text of "Job_\\Submission_\\Parameters"
                    center
                    bold
                    align as label
            column3
                text of "Username:<actor>"
                    right align
                    bold
        blank line
        three column independent
            column1
                paragraph
                    ParametersParLocationUtilization.InventoryCompany
                    ParametersParLocationUtilization.InventoryCompany.Name
                        no label
                paragraph
                    ParametersParLocationUtilization.ReportGroup
                    ParametersParLocationUtilization.ReportGroup.Name
                        no label
                paragraph
                    ParametersParLocationUtilization.InventoryLocation
                    ParametersParLocationUtilization.InventoryLocation.Name
                        no label
                paragraph
                    ParametersParLocationUtilization.DateRange.Begin
                        label is "FromDate"
                    ParametersParLocationUtilization.DateRange.End
                        label is "ToDate"
            column2
                ParametersParLocationUtilization.ReplenishDays
                    label is "ReplenishDays"
                ParametersParLocationUtilization.MinimumSamples
                    label is "MinimumSamples"
                    display when blank
                    display zero
                ParametersParLocationUtilization.SortOption
                    label is "SortOption"
            column3
                ParametersParLocationUtilization.PrintOption
                    label is "PrintOption"
                    display when blank
                ParametersParLocationUtilization.UpdateOption
                    label is "UpdateOption"
                    display when blank
        visible when (NoDataProcessed)
            single column
                text of "<DerivedNoDataToProcessMessage>"
