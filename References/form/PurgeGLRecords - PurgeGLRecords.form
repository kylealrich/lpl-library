PurgeGLRecords is a Form
    is primary
    title is "PurgeGlobalLedgerTransactionalHistory"
    Layout
        visible when (false)
            single column
                FinanceEnterpriseGroup
        single column
            GeneralLedgerCloseConfiguration
                label is "CloseConfiguration"
            GeneralLedgerCloseYear
                label is "CloseYear"
        single column
            EntityOption
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>_Option"
            visible when (EntityOption.Single)
                AccountingEntity
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
            visible when (EntityOption.Group)
                AccountingEntityGroup
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>_Group"
            RecordType
                label is "SystemCodeType"
            SystemCodeSelectionOption
                label is "SystemCodeOption"
            visible when (SystemCodeSelectionOption.Single)
                visible when (RecordType.User)
                    GeneralLedgerSystemCode
                        label is "SystemCode"
                        select is GeneralLedgerSystemCodeUserTypeSelectList
                visible when (RecordType.System)
                    GeneralLedgerSystemCode
                        label is "SystemCode"
                        select is GeneralLedgerSystemCodeSystemTypeSelectList
        single column
            PurgeGeneralLedgerTotal
                label is "PurgeGlobalLedgerTotal"
            ReportOnly
