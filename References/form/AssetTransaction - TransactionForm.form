TransactionForm is a Form
    title is "AssetTransaction"
    Layout
        paragraph
            Company
                display as text
            Company.GeneralLedgerCompany.Name
                no label
                display as text
        paragraph
            Asset
                display as text
            Asset.Description
                no label
                display as text
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                    display as text
                Asset.AssetLease.LeaseCompany.Name
                    no label
                    display as text
            paragraph
                Asset.AssetLease.Lease
                    display as text
                Asset.AssetLease.Lease.Description
                    no label
                    display as text
        paragraph
            Asset.TagNumber
                display as text
        paragraph
            TransactionDate
                display as text
        paragraph
            PostingDate
                display as text
        visible when (IsManualEntry)
            paragraph
                Book
                Book.Description
                    no label
                    display as text
        visible when (not IsManualEntry)
            paragraph
                Book
                    display as text
                Book.Description
                    no label
                    display as text
        blank line
        paragraph
            DerivedAssetAccountType
        visible when (IsManualEntry)
            paragraph
                Description
        visible when (not IsManualEntry)
            paragraph
                Description
                    display as text
        visible when (IsManualEntry)
            paragraph
                Reference
        visible when (not IsManualEntry)
            paragraph
                Reference
                    display as text
        paragraph
            DistributionAccount
                label is "Account"
                compact format
        visible when (IsManualEntry)
            paragraph
                TransactionAmount
                    label is "TransactionAmount"
                TransientBookCurrency
                    label is "TransactionCurrency"
                    display as text
        visible when (not IsManualEntry)
            paragraph
                TransactionAmount
                    label is "TransactionAmount"
                    display as text
                TransientBookCurrency
                    label is "TransactionCurrency"
                    display as text
