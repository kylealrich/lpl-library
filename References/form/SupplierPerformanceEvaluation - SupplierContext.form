SupplierContext is a Form
    Layout
        single column
            text of "WhenAllCriteriaAreEnteredNavigateBackToMainAndClickCompleteEvaluation"
                bold
                color of blue
        paragraph
            SupplierGroup
                display as text
            Supplier.SupplierName
                label is "Supplier"
                display as text
            Supplier.SupplierStatus
                display as text
        single column
            visible when (Description entered)
                PerformanceEvaluationTemplate.Name
                    label is "PerformanceEvaluationTemplate"
        single column
            Description
        paragraph
            button of "ViewEvaluation"
                visible when (IsEvaluationComplete)
                link is PerformanceEvaluationInformation
            button of "AmendEvaluation"
                visible when (IsEvaluationComplete)
                action is AmendSupplierEvaluation
            button of "CompleteEvaluation"
                visible when (CompletionButtonValid)
                action is CompleteEvaluation
            visible when (IsEvaluationComplete)
                EvaluationCompletionDate
                    label is "CompletionDate"
                    display as text
