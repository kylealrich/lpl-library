CashRequirementsResultContext is a Form
    title is "CashRequirementsResult"
    Layout
        four column distributed
            column1
                paragraph
                    visible when (RecordExists)
                        VendorGroupRepresentativeText
                            display as text
                    visible when (not RecordExists)
                        VendorGroup
                            when value changed
                                CashRequirementsTemplate =  first CashRequirementsTemplateRel.CashRequirementsTemplate
                        VendorGroup.Description
                            no label
                            display as text
                paragraph
                    visible when (RecordExists)
                        ProcessGroupRepresentativeText
                            display as text
                    visible when (not RecordExists)
                        ProcessGroup
                            select is ProcessGroups
                            when value changed
                                CashRequirementsTemplate =  first CashRequirementsTemplateRel.CashRequirementsTemplate
                        ProcessGroup.Description
                            no label
                            display as text
                paragraph
                    visible when (ManuallyChanged)
                        text of "<ManuallyChangedMessage>"
            column2
                paragraph
                    visible when (RecordExists)
                        PayGroupRepresentativeText
                            display as text
                    visible when (not RecordExists)
                        PayGroup
                            select is PayGroups
                            when value changed
                                CashRequirementsTemplate =  first CashRequirementsTemplateRel.CashRequirementsTemplate
                        PayGroup.Name
                            no label
                            display as text
                paragraph
                    CashRequirementsResult
                        display as text
            column3
                visible when (not RecordExists)
                    CashRequirementsTemplate
                visible when (RecordExists)
                    CashRequirementsTemplate
                        display as text
                visible when (APJournalizeGroup entered)
                    APJournalizeGroup
                        label is "PayablesJournalizeGroup"
            column4
                paragraph
                    Status
                        display as tag
                            color of blue when (Status.Created)
                            color of yellow when (Status.Selected)
                            color of green when (Status.Completed)
                            color of orange when (Status.Processing)
                            color of purple when (Status.Historical)
                            color of red when (Status.Incomplete)
                    visible when (VendorHasNegativeNetPaymentAmount)
                        text of "<NegativeNetPaymentAmountMessage>"
                            bold
                            color of red
                visible when (CBJournalizeGroup entered)
                    CBJournalizeGroup
                        label is "CashLedgerJournalizeGroup"
