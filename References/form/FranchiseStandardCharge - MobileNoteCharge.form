MobileNoteCharge is a Form
    use for action UpdateNoteBasedCharge
    title is "UpdateNoteCharge"
    restrict action Create
    restrict action Delete
    restrict action CreateNoteBasedCharge
    restrict action CreateSalesBasedCharge
    restrict action CreateSpecialCharge
    Actions
        action is Delete
            hide when invalid
        action is save
            label is "_"
    Layout
        header3 of "<ChargeType>Charges"
        paragraph
            Company
                display as text
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
            Description
                no label
                show up to 20 characters
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
                display as text
        paragraph
            Active
        blank line
        single column
            header3 of "Options"
            Frequency
            ProcessLevel
            TaxableFlag
                label is "Taxable"
            TaxCode
            InterestRate
            BalanceFlag
                label is "PrintBalanceOnStatement"
            text of "Accounts"
                bold
            RevenueAccount
                label is "Sales"
                compact format
            NoteAccount
                label is "NoteAsset"
                compact format
            NoteAccrualAccount
                label is "NoteAccrual"
                compact format
            NoteAccrualOffsetAccount
                label is "NoteAccrualOffset"
                compact format
            AccrualAccount
                label is "InterestAccrual"
                compact format
            AccrualOffsetAccount
                label is "InterestAccrualOffset"
                compact format
