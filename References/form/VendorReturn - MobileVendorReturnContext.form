MobileVendorReturnContext is a Form
    title is "VendorReturn"
    Layout
        visible when (VendorReturnExists)
            display as text
                two column
                    column1 of 50%
                        Vendor.DerivedVendorIDName
                            label is "Vendor"
                        MobileReturnValue
                            label is "ReturnValue"
                    column2 of 50%
                        ReturnFromLocation.DerivedInventoryLocationIDName
                            label is "ReturnFromLocation"
                paragraph
                    visible when (not Canceled)
                        Status
                            display as tag
                                color of gray when (Status.Added)
                                color of green when (Status.AuthorizedByVendor)
                                color of yellow when (Status.WaitingForVendorAction)
                                color of gray when (Status.Closed)
                    visible when (Canceled)
                        Canceled
