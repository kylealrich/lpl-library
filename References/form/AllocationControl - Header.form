Header is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (RecordExists)
                        AllocationControl
                            display as text
                    visible when (not RecordExists)
                        AllocationControl
                paragraph
                    Type
                        display as text
            column2
                paragraph
                    Description
                paragraph
                    visible when (Type.Actuals)
                        Calendar
                    visible when (Type.Budget)
                        Calendar
                            display as text
            column3
                visible when (Type.Actuals)
                    paragraph
                        CurrencyTable
                    paragraph
                        PeriodType
                visible when (Type.Budget)
                    paragraph
                        Scenario
                            select is AllocationBudgets
                    paragraph
                        PeriodType
                            display as text
