MobileMain is a Form
    title is "Main"
    Layout
        visible when (not RecordExists)
            paragraph
                ItemReplenishmentSource.ReplenishmentPriority
                    label is "Priority"
        paragraph
            Vendor
                select is MobileVendorSelectSearch
            Vendor.VendorName
                no label
                display as text
        paragraph
            PurchaseFromLocation
                select is MobilePurchaseFromLocationsSelect
                show up to 5 characters
            PurchaseFromLocation.VendorName
                no label
                display as text
        single column
            text of "or"
                bold
            blank line
        two column grid
            column1 of 50%
                ReplenishFrom.ReplenishFromCompany
                    label is "ReplenishFromCompany"
                    select is MobileInventoryCompanyList
                ReplenishFrom.ReplenishFromLocation
                    label is "ReplenishFromLocation"
                    select is MobileInventoryLocations
                    show up to 5 characters
            column2 of 50%
                display as text
                    ReplenishFrom.ReplenishFromCompany.Name
                        no label
                    ReplenishFrom.ReplenishFromLocation.Name
                        no label
        paragraph
            ReplenishFrom.ReplenishFromBin
                label is "ReplenishFromBin"
                select is MobileBinSelect
