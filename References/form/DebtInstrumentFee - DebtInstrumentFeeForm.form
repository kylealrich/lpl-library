DebtInstrumentFeeForm is a Form
    is primary
    title is "Fee"
    Layout
        display as text
            two column distributed
                DebtInstrument
                DebtInstrument.Description
        blank line
        paragraph
            DebtFeeCode
            DebtFeeCode.Description
                no label
                display as text
        single column
            Description
        paragraph
            Payee
            Payee.Description
                no label
                display as text
        single column
            button of "<Payee.FinancialInstitutionURL>"
                visible when (Payee.URLEntered)
                link is external "<Payee.FinancialInstitutionURL>"
                display as link
        two column
            FeeScheduleCreationParameter.PaymentFrequency
            FeePaymentMethod
        visible when (FeeScheduleCreationParameter.RequiresNumberOfDays)
            single column
                FeeScheduleCreationParameter.NumberOfDays
        visible when (FeeScheduleCreationParameter.RequiresDayOfWeek)
            single column
                FeeScheduleCreationParameter.DayOfWeek
        visible when (FeeScheduleCreationParameter.RequiresDayOfMonth)
            four column
                FeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[1]
                    label is "DayOfMonth"
                FeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[2]
                    no label
                FeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[3]
                    no label
                FeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[4]
                    no label
        single column
            FeeScheduleCreationParameter.PaymentBasis
            FeeScheduleCreationParameter.PaymentAmount
        blank line
        header3 of "DebtFeeAccountingInformation:"
        paragraph
            CashAllocationCode
                select is ActiveCashAllocationCodes
            CashAllocationCode.Description
                no label
                display as text
