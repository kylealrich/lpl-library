Main is a Form
    Layout
        visible when (not RecordExists)
            two column distributed
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    InventoryLocation
                        label is "Location"
                    InventoryLocation.Name
                        no label
                        display as text
                paragraph
                    Item
                    Item.Description
                        no label
                        display as text
                    Item.Description2
                        no label
                        display as text
                paragraph
                    ItemReplenishmentSource.ReplenishmentPriority
                        label is "Priority"
            header2 of "_"
        UseVendorOrReplenishFrom
            label is "UseVendor_orReplenishFrom"
            display as horizontal radio buttons
        visible when (UseVendorOrReplenishFrom.Vendor)
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            paragraph
                PurchaseFromLocation
                PurchaseFromLocation.VendorName
                    no label
                    display as text
        visible when (UseVendorOrReplenishFrom.ReplenishFrom)
            paragraph
                ReplenishFrom.ReplenishFromCompany
                    label is "ReplenishFromCompany"
                ReplenishFrom.ReplenishFromCompany.Name
                    no label
                    display as text
            paragraph
                ReplenishFrom.ReplenishFromLocation
                    label is "ReplenishFromLocation"
                ReplenishFrom.ReplenishFromLocation.Name
                    no label
                    display as text
            paragraph
                ReplenishFrom.ReplenishFromBin
                    label is "ReplenishFromBin"
