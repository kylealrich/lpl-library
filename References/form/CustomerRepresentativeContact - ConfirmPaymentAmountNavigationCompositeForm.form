ConfirmPaymentAmountNavigationCompositeForm is a CompositeForm
    title is "<DerivedConfirmPaymentAmountFormTitle>"
    called out actions only
    context form is ConfirmPaymentAmountNavigationContextForm
    restrict action Create
    restrict action CreateActorContextForEachCustomerRepresentativeContact
    restrict action CreateActorContextForEachNewCustomerRepresentativeContact
    restrict action CustomerUpdateRequest
    restrict action Delete
    restrict action EmailToCustomerContacts
    restrict action InactivateContact
    restrict action InitializeReceivablePortalPaymentHeader
    restrict action InternallyCreateContacts
    restrict action NewContact
    restrict action ResetCustomerContactPassword
    restrict action SelectPaymentMethod
    restrict action Update
    restrict action UpdateMyContactInformation
    restrict action SendEmailForExternalUserMigrationUsernameChange
    Actions
        action is refresh
            label is "_"
    DetailSelectedForPayment is a Panel
        title is "DetailSelectedForPayment1"
        visible when (ReceivablePortalPaymentDetail1RelExist)
        list is ReceivablePortalPaymentDetail1Rel.ReceivablePortalPaymentDetailContextList
    UnappliedPayments is a Panel
        title is "UnappliedPayments"
        visible when (CustGroupNotReleasePortalPayTrxApiIdRecPayRelExistsAndRPortalPayDetail1RelNotExist)
        list is ThirdPartyPaymentProcessingTransactionApiIdReceivablePaymentRel.PortalReceivableUnAppliedPaymentsList
    Payments is a Panel
        title is "Payments"
        visible when (CustGroupReleasePortalPayTrxApiIdRecPayRelExistsAndRPortalPayDetail1RelNotExist)
        list is ThirdPartyPaymentProcessingTransactionApiIdReceivablePaymentRel.PortalReceivablePaymentList
    PaymentDeclined is a Panel
        title is "PaymentDeclined"
        visible when (TransactionApiIdReceivablePaymentRelAndReceivablePortalPaymentDetail1RelNotExist)
        form is PaymentDeclinedForm
