XiSESummary is a Form
    title is "EventSummary"
    disable field options
    Layout
        display as text
            single column
                Name
                    no label
                    header3
                    color of blue
                Description
                    no label
                    use text area of 5 lines
            visible when (not InformalQuote)
                header2 of "Dates"
                single column
                    visible when (PreviewDate entered)
                        PreviewDate
                            label is "Preview"
                    DerivedTextOpenDate
                        label is "Open"
                    visible when (QandAOpenDate entered)
                        DerivedTextQAOpen
                            label is "QAndAOpen"
                    visible when (QandAOpenDate entered)
                        DerivedTextQAClose
                            label is "QAndAClose"
                    visible when (not StepTwoStarted)
                        visible when (not BestAndFinalStarted)
                            DerivedCloseDate
                                label is "Close"
                    visible when (StepTwoStarted)
                        DerivedTextStepTwoCloseDate
                            label is "StepTwoCloseDate"
                    visible when (BestAndFinalStarted)
                        DerivedTextBestAndFinalCloseDate
                            label is "BestAndFinalCloseDate"
                    visible when (DisputeCloseDate entered)
                        DerivedTextDisputeClose
                            label is "DisputeClose"
            header2 of "Rules"
            two column distributed
                column1
                    SourcingEventType
                        label is "Type"
                    CurrencyCode
                        label is "Currency"
                    visible when (RequireBidBond)
                        RequireBidBond
                            label is "BidBondRequired"
                    visible when (RequireAllLines)
                        RequireAllLines
                            label is "AllLinesRequired"
                    visible when (DisplayIDMBidTabulation)
                        button of "View"
                            link is external "<DerivedIDMDocumentLink>"
                                lazy url retrieval
                            label is "BidTabulation"
                            display as link
                    visible when (SupplierCanViewIDMAwardDetails)
                        button of "View"
                            link is external "<DerivedIDMAwardDetailsDocumentLink>"
                                lazy url retrieval
                            label is "AwardDetails"
                            display as link
                column2
                    TypeDescription
                        no label
                    visible when (Sealed)
                        Sealed
                            label is "SealedBid"
                    visible when (RequireBidBond)
                        BidBondPercent
