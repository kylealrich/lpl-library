PaymentReversalContextForm is a Form
    Layout
        visible when (not PaymentExists)
            paragraph
                Company
                Company.Name
                    no label
                    display as text
                Company.Currency
                    no label
                    display as text
            paragraph
                ReceivablePaymentApplyReverseHeader.CreditBatchNumber
                    label is "Batch"
                ReceivablePaymentApplyReverseHeader.CreditPaymentSequence
                    label is "Sequence"
        visible when (PaymentExists)
            display as text
                paragraph
                    Company
                    Company.Name
                        no label
                    Company.Currency
                        no label
                paragraph
                    ReceivablePaymentApplyReverseHeader.CreditBatchNumber
                        label is "Batch"
                    ReceivablePaymentApplyReverseHeader.CreditPaymentSequence
                        label is "Sequence"
        display as text
            two column
                paragraph
                    CreditCustomer
                        label is "Customer"
                    CreditCustomer.Name
                        no label
                paragraph
                    ReceivablePaymentRel.ReceivableProcessLevel
                        label is "ProcessLevel"
            two column
                CreditTransactionNumber
                    label is "Payment"
                ReceivablePaymentRel.GeneralLedgerDate
                    label is "PostDate"
            two column
                paragraph
                    ReceivablePaymentRel.TransactionAmount
                        label is "PaymentAmount"
                    ReceivablePaymentRel.ReceivablePaymentHeader.Currency
                        no label
                ReceivablePaymentRel.PaymentOpen
                    label is "UnappliedAmount"
            paragraph
                ReceivablePaymentRel.CreditAppliedAmount
                ReceivablePaymentRel.AppliedAmount
                ReceivablePaymentRel.AdjustAmountTransactionCurrency
        blank line
        paragraph
            GeneralLedgerDate
                label is "GlobalLedgerDate"
            TransientReceivableOperator
