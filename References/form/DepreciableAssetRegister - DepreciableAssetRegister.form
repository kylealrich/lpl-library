DepreciableAssetRegister is an ActionForm
    action is DepreciableAssetRegister
    Layout
        header2 of "SelectionOptions"
        paragraph
            Book
            Book.Description
                no label
                display as text
            PrelimClose
                label is "PreliminaryClose"
        paragraph
            FromDate
                label is "FromInServiceDate"
            ToDate
                label is "ToInServiceDate"
        paragraph
            Company
                select is Companies
            Company.CompanyName
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            AssetType
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division
                no label
                display as text
        paragraph
            Classification
            Property
        paragraph
            Category
            Disposals
        header2 of "AdditionalOptions"
        paragraph
            FullyDepr
                label is "FullyDepreciated"
            Simulated
        paragraph
            TaxExempt
            Used
        paragraph
            Asset
                select is AllAssets
            Asset.Description
                no label
                display as text
        paragraph
            AssetLease.LeaseCompany
                label is "Or_Lease"
            AssetLease.LeaseCompany.Name
                no label
                display as text
            AssetLease.Lease
                no label
        paragraph
            TagNumber
                label is "Tag"
        paragraph
            AssetGroup
                select is AssetGroups
            AssetGroup.Description
                no label
                display as text
        paragraph
            TransactionDimension
                label is "TransactionDimensions"
                compact format
            AstAuGroup
                label is "OR_AssetDimensionGroup"
        header2 of "OutputOptions"
        single column
            PageBreak
        single column
            header3 of "PrintTotals"
        single column
            header4 of "Sequence"
            LeaseOption
                label is "Lease"
            LocOption
                label is "Location"
            DivOption
                label is "Division"
            TypeOption
                label is "Type\\,Sub"
            AstgrpOption
                label is "AssetGroup"
            AssetOption
                label is "Asset"
            header4 of "Miscellaneous"
            InservOption
                label is "In\\-\\Service"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DepreciableAssetRegisterReport_RDG
            column2 of 25%
                DepreciableAssetRegisterReport_XPT
