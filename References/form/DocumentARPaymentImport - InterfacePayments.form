InterfacePayments is an ActionForm
    action is InterfacePayments
    title is "InterfaceDocumentPayments"
    Layout
        two column distributed
            column1
                paragraph
                    PrmCompany
                        label is "Company"
                    PrmCompany.Name
                        no label
                        display as text
                PostDate
                DepositDate
                paragraph
                    ProcessLevel
                        display as required when (Batch not entered)
                    ProcessLevel.Name
                        no label
                        display as text
                paragraph
                    CashCode
                        select is CashCodeForCompanyList
                    CashCode.Description
                        no label
                        display as text
                paragraph
                    LockBox
                    LockBox.Name
                        no label
                        display as text
                paragraph
                    Operator
                    Operator.Name
                        no label
                        display as text
                Batch
                    select is UnreleasedBatches
                    when value changed
                        refresh ProcessLevel
                AddToUnreleasedBatch
                    label is "AddToUnreleasedBatch"
                        left of field
                paragraph
                    Currency
                    Currency.Description
                        no label
                        display as text
                ExchangeRate
                ReleaseBatch
                    label is "ReleaseBatch"
                        left of field
            column2
                PrmReference
                    label is "Reference"
                paragraph
                    DepositBankCode
                        label is "DepositBankCode"
                    DepositBankCode.Description
                        no label
                        display as text
                BankCharges
                BankChargesAccount
                    compact format
                blank line
                single column
                    text of "Cash_\\Ledger_\\Transaction_\\Data:"
                        bold
                    CashLedgerUserField1
                    CashLedgerUserField2
                    CashLedgerUserField3
                    CashLedgerUserField4
