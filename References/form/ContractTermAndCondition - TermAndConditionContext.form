TermAndConditionContext is a Form
    title is "ContractTerm_andCondition"
    Layout
        display as text
            three column distributed
                column1
                    Contract.RepresentativeText
                    paragraph
                        ContractArticle.RepresentativeText
                            label is "Article"
                        DisplayOrder
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                    paragraph
                        TermLevel
                        visible when (ParentTermAndCondition entered)
                            ParentTermAndCondition.Title
                                label is "ParentTerm_andCondition"
                column3
                    paragraph
                        Contract.WorkingContractID
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        visible when (NoModification)
            single column
                text of "Term_andConditionDoesNotAllowModification"
                    bold
        two column
            visible when (DisplayDraftUpdatedMessage)
                text of "ViewTheProposedUpdatesToThisTerm"
                    link is CurrentChangesNav
            visible when (DisplayPendingUpdateMessage)
                text of "ViewThePendingUpdatesToThisTerm"
                    link is CurrentChangesNav
        visible when (DisplayButtons)
            paragraph
                button of "ApproverUpdateTerm_andCondition"
                    action is BuyerUpdateDescription
                button of "ApproverDeleteTerm"
                    action is BuyerCreateDeleteUpdateRecord
                button of "BuyerUpdateTerm_andCondition"
                    visible when (BuyerEditTermActionValid)
                    action is BuyerUpdateDescription
                button of "SupplierUpdateTerm_andCondition"
                    visible when (SupplierEditTermActionValid)
                    action is SupplierUpdateDescription
                button of "UpdateFromPreviousVersion"
                    visible when (UpdateFromPreviousVersionValid)
                    action is UpdateFromPreviousVersion
                button of "BuyerDeleteTerm"
                    visible when (BuyerAddendumDeleteTermButtonValid)
                    action is BuyerCreateDeleteUpdateRecord
                button of "SupplierDeleteTerm"
                    visible when (SupplierAddendumDeleteTermButtonValid)
                    action is SupplierCreateDeleteUpdateRecord
                button of "AddAttachment"
                    visible when (BuyerEditTermActionValid)
                    action is BuyerAddAttachment
                button of "AddAttachment"
                    visible when (SupplierEditTermActionValid)
                    action is SupplierAddAttachment
                button of "DeleteAttachment"
                    visible when (DeleteAttachmentValid)
                    action is DeleteAttachment
