ReinstatementWizardSummary is a Form
    title is "AssetReinstatement"
    Layout
        blank line
        blank line
        display as text
            paragraph
                Asset
                Asset.Description
                    no label
            paragraph
                Asset.TagNumber
            paragraph
                Asset.DerivedStatus
            blank line
            two column
                ReinstatementDate
                AssetDisposalRel.DisposalDate
        blank line
        single column
            button of "ReleaseReinstatement"
                valid when (Asset.ApprovalReleaseReinstatementValid)
                action is AssetReleaseReinstatement
            blank line
            button of "ResetReinstatement"
                valid when (Asset.ApprovalUnreleasedAssetReinstatementsExists)
                action is AssetResetReinstatement
            blank line
            button of "SubmitForApproval"
                valid when (Asset.SubmitForApprovalValid)
                action is SubmitForApproval
            blank line
            button of "GoToAsset"
                link is AssetLink
