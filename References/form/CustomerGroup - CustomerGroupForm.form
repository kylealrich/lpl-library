CustomerGroupForm is a CompositeForm
    is primary
    title is "CustomerGroup"
    context form is CustomerGroupFormContext
        background is theme color
    Main is a Panel
        form is Main
    Options is a Panel
        form is Options
    Companies is a Panel
        list is ReceivableCompanyRel.CompaniesLists
    AdjustmentApproval is a Panel
        form is ApplicationAdjustmentApprovalForm
    PortalSetup is a Panel
        visible when (UseBillingReceivablesPortal)
        form is BillingReceivablesPortalSetup
    PortalQuestions is a Panel
        visible when (UseBillingReceivablesPortal)
        list is CustomerGroupQuestion set.Questions
    PortalLinks is a Panel
        visible when (UseBillingReceivablesPortal)
        list is BillingReceivablesPortalLinksAndInstructions set.Links
    PortalInstructions is a Panel
        visible when (UseBillingReceivablesPortal)
        list is BillingReceivablesPortalLinksAndInstructions set.Instructions
    PortalAttachments is a Panel
        visible when (UseBillingReceivablesPortal)
        list is BillingReceivablesPortalLinksAndInstructions set.Attachments
    PortalEmails is a Panel
        visible when (UseBillingReceivablesPortal)
        form is BillingReceivablesPortalMessages
    PortalContacts is a Panel
        visible when (UseBillingReceivablesPortal)
        list is CustomerGroupPortalContact set.CustomerPortalContactList
    PortalPayments is a Panel
        visible when (UseBillingReceivablesPortal)
        form is BillingReceivablesPortalPaymentSetup
    SynchronizeCustomerContacts is a Panel
        visible when (UseBillingReceivablesPortalAnyCustomerRepresentativeContactAttentionRelExists)
        list is CustomerRepresentativeContact.CustomerContactsSetupReview
    CustomerContacts is a Panel
        visible when (UseBillingReceivablesPortalAnyCustomerRepresentativeContactAttentionRelNotExists)
        list is CustomerRepresentativeContact.CustomerContactsSetupReview
    PortalPaymentCompanyCustomer is a Panel
        visible when (CashManagementAccountSetupWithThirdPartyPaymentProcessingReceivableProcessLevelRelLegalEntityMatchesAReceivableCompany)
        list is PortalPaymentCompanyCustomerRel.ARCustomers
    PortalPaymentSelectedInvoiceDetailRecordsToWatch is a MultiListPanel
        visible when (UseBillingReceivablesPortal)
        list is ReceivablePortalPaymentDetailRel.DaysSinceCreatedList
            show 5 lines
        list is ReceivableInvoiceDetailSelectedForPaymentWithoutPaymentDetailRel.PortalReceivableInvoiceDetailWithNoCorrespondingPaymentDetail
            show 5 lines
