RSSLPLCatalogItemDetail is a CompositeForm
    title is "CatalogItem-<DerivedItem>Details"
    called out actions only
    context form is RSSLPLCatalogItemContext
        background is theme color
    Actions
        action is RSSLPLAddRequisition
            action icon is add
            label is "AddToRequisition"
            mouse over text is "AddToRequisition"
            hide when invalid
            valid when (not RSSLPLCurrentRequisitionForRQCEntered)
        action is RSSLPLAddToRequisition
            action icon is add
            label is "AddToRequisition"
            mouse over text is "AddToRequisition"
            hide when invalid
            valid when (RSSLPLCurrentRequisitionForRQCEntered)
        navigation is RequesterShoppingPageNav
            action icon is undo
            label is "BackToCatalogItems"
    ItemDetails is a Panel
        title is "ItemDetails"
        form is RSSLPLCatalogItemLMain
