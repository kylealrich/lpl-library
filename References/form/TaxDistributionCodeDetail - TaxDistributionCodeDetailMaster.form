TaxDistributionCodeDetailMaster is a Form
    is primary
    title is "TaxDistributionCodeDetail"
    Layout
        three column table
            column1
                paragraph
                    TaxEntity
                paragraph
                    TaxEntity.UseTaxCodeAccounts
                        label is "UseTaxCodeAccounts"
                paragraph
                    TaxDistributionCode
            column2
                paragraph
                    DistributionType
                paragraph
                    Reference
                        display as text
                paragraph
                    DerivedPostOption
                        label is "PostOption"
            column3
                paragraph
                    TaxDistributionLevel
                paragraph
                    TaxEntity.LandNonRecoverable
                paragraph
                    Description
        visible when (TaxEntity.UseTaxCodeAccounts)
            paragraph
                OverrideTaxCode
                    select is TaxCodeFilteredList
                UpdateBlankAccounts
                    label is "UpdateBlankAccounts"
                BypassAccountEdit
                    label is "BypassAccountEdit"
        header2 of "DistributionCodeAccounts"
        single column
            paragraph
                TaxInputAccount
                    compact format
                visible when (TaxInputAccount not entered)
                    text of "InputAccountRequired"
                        bold
                        color of red
            paragraph
                TaxInputDueAccount
                    compact format
                visible when (TaxInputDueAccount not entered)
                    text of "TaxInputDueAccountRequired"
                        bold
                        color of red
            paragraph
                TaxOutputAccount
                    compact format
                visible when (TaxOutputAccount not entered)
                    text of "OutputAccountRequired"
                        bold
                        color of red
            paragraph
                TaxOutputDueAccount
                    compact format
                visible when (TaxOutputDueAccount not entered)
                    text of "TaxOutputDueAccountRequired"
                        bold
                        color of red
            single column
                RecoverableAccount
                    compact format
                NonRecoverableAccount
                    compact format
                ForeignRecoverableAccount
                    compact format
                ForeignNonRecoverableAccount
                    compact format
            visible when (not TaxEntity.UseTaxCodeAccounts)
                header2 of "<DerivedTaxLabel>"
                single column
                    TaxEntity.TaxInputAccount
                        compact format
                    TaxEntity.TaxInputDueAccount
                        compact format
                    TaxEntity.TaxOutputAccount
                        compact format
                    TaxEntity.TaxOutputDueAccount
                        compact format
                    TaxEntity.RecoverableAccount
                        compact format
                    TaxEntity.NonRecoverableAccount
                        compact format
                    TaxEntity.ForeignRecoverableAccount
                        compact format
                    TaxEntity.ForeignNonRecoverableAccount
                        compact format
            visible when (EntityTaxCodeLevel)
                header2 of "<DerivedTaxLabel>"
                single column
                    EntityTaxCodesRel.TaxInputAccount
                        compact format
                    EntityTaxCodesRel.TaxInputDueAccount
                        compact format
                    EntityTaxCodesRel.TaxOutputAccount
                        compact format
                    EntityTaxCodesRel.TaxOutputDueAccount
                        compact format
