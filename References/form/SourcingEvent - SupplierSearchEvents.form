SupplierSearchEvents is a SearchForm
    title is "Events"
    Layout
        four column distributed
            column1
                EventSearchDocument
                    label is "Keyword"
                Category
                    label is "Category"
                    select is SupplierCategories
            column2
                SourcingEvent
                    label is "EventNumber"
                    select is AllEventsSelect
                    raise yellow alert when (RequireBidBond)
                        mouse over text is "ABidBondMustBeProvidedWhenRespondingToThisEvent"
                SubCategory
                    label is "SubCategory"
                    select is SupplierSubCategories
            column3
                Name
                EventReference
                    label is "Reference"
            column4
                SourcingEventType
                    label is "Type"
                    select is SupplierEventTypes
                CommoditySearch
                    label is "CommoditySearch"
                    use text area of 1 lines
