ReconciliationAccountCommentForm is a Form
    is primary
    title is "Comment"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        visible when (ReconciliationAccount.LevelType.Group)
            paragraph
                ReconciliationAccount.ReconciliationGroup
                    display only
        visible when (ReconciliationAccount.LevelType.NonAccount)
            paragraph
                ReconciliationAccount.NonAccountReconciliation
                    display only
        visible when (ReconciliationAccount.IsAccountWithinGroup)
            paragraph
                ReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
                    display only
        visible when (ReconciliationAccount.LevelType.Account)
            paragraph
                ReconciliationAccount.ReconciliationCodeBlock
                    display only
                ReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
        visible when (PeriodEndComment)
            paragraph
                GeneralLedgerClosePeriod
                    label is "Period"
                    display as text
                    compact format
                GeneralLedgerClosePeriod.PeriodName
                    no label
                    display as text
        blank line
        single column
            Subject
            Comment
                use text area of 2 lines
            visible when (not HasAuditorRole)
                ReconCommentType
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
        visible when (HasComment)
            paragraph
                From
                    display as text
                CommentDate
                    display as text
