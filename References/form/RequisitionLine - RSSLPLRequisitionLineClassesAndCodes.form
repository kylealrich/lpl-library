RSSLPLRequisitionLineClassesAndCodes is a Form
    title is "Classes_andCodes"
    Layout
        visible when (DisplayPurchaseClasses)
            two column distributed
                paragraph
                    MajorPurchasingClass
                        show up to 10 characters
                        display as required when (RSSLPLMajorPurchasingClassRequired)
                    MajorPurchasingClass.Description
                        no label
                        display as text
                paragraph
                    MinorPurchasingClass
                        show up to 10 characters
                        display as required when (MinorPurchasingClassRequired)
                    MinorPurchasingClass.Description
                        no label
                        display as text
        two column distributed
            paragraph
                visible when (DisplayGTIN)
                    ItemGTIN
                        label is "G\\T\\I\\N"
                        select is ActiveGTINNumbersForAnItem
                    ItemGTIN.AbbreviatedDescription
                        no label
                        display as text
            paragraph
                visible when (DisplayStrategicSourcingUsed)
                    visible when (DisplayStrategicSourcingUsedForCreatePurchaseOrder)
                        SourcingEventRequired
                            when value changed
                                refresh RSSLPLRequireVendor
                visible when (SourcingEventExists)
                    first SourcingEventLineSourceRel.SourcingEvent
                        label is "SourcingEventAndLine"
                        display as text
                    first SourcingEventLineSourceRel.SourcingEventLine
                        no label
                        display as text
        two column distributed
            Manufacturer
                label is "ManufacturerCode\\/\\Division"
                compact format
                display as required when (RequesterRel.RequireManufacturer)
            ManufacturerNumber
                display as required when (RequesterRel.RequireManufacturerNumber)
        two column distributed
            column1
                paragraph
                    visible when (DisplayCommodityCode)
                        CommodityCode
                            display as required when (RSSLPLRequireCommodityCode)
                        CommodityCode.CcDescription
                            no label
                            display as text
            column2
                StandardCommentCode
                    label is "CommentCode"
        two column distributed
            column1
                paragraph
                    UNSPSCCode
                        compact format
        visible when (IsHSNSACCodeEnabled)
            paragraph
                HSNSACCode
                    display as required when (HSNSACCodeRequired)
                HSNSACCode.Description
                    no label
                    display as text
        visible when (false)
            Vendor
                display as required when (RSSLPLRequireVendor)
