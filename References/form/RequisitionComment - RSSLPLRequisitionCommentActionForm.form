RSSLPLRequisitionCommentActionForm is an ActionForm
    action is RSSLPLCreate
    submit label is "Ok"
    title is "CreateComment"
    Layout
        display as text
            two column distributed
                Company.DerivedCompanyNameID
                    label is "Company"
                paragraph
                    Requisition
                        label is "Requisition"
                    visible when (false)
                        TransientRequisition
        visible when (DisplayAllowAllCommentTypes)
            header2 of "PrintOn"
            three column distributed
                TransientPrintOnInternalDocuments
                    label is "InternalDocuments"
                TransientPrintOnPurchaseOrder
                    label is "PurchaseOrder"
                TransientPrintOnPurchaseOrderTrailer
                    label is "PurchaseOrderTrailer"
                TransientPrintOnReceivingDocument
                    label is "ReceivingDocument"
                TransientPrintOnPickList
                    label is "PickList"
                TransientPrintOnDeliveryTicket
                    label is "DeliveryTicket"
                TransientPrintOnRequisition
                    label is "Requisition"
                TransientDisplayOnlyOnInternalDocuments
                    label is "DisplayOnlyOnInternalDocuments"
                TransientDisplayOnly
                TransientInvoiceComments
            two column distributed
                CommentTitle
                    label is "Title"
                    initial value is CommentTitleMessage
                Attachment.File
        visible when (not DisplayAllowAllCommentTypes)
            Attachment.File
                label is "File"
        single column
            CommentText
                label is "Text"
                use text area of 12 lines
