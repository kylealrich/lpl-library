ReceivablePaymentHeader is a Form
    Layout
        paragraph
            ReceivableBODSelectType
                label is "ReceivableBODSelectType"
        visible when (IsReceivablePaymentTracker)
            paragraph
                ReceivablePaymentFromCompany
                    label is "Company"
                ReceivablePaymentToCompany
                    label is "-"
            paragraph
                ReceivablePaymentFromHeader
                    label is "ReceivablePaymentHeader"
                ReceivablePaymentToHeader
                    label is "-"
        visible when (IsReceivablePayment)
            paragraph
                ReceivablePaymentDateRange.Begin
                    label is "DepositeDate"
                ReceivablePaymentDateRange.End
                    label is "-"
        visible when (IsReceivablePaymentTracker)
            single column
                ReceivablePaymentTrigger
                    label is "Trigger"
                        bold
                        color of green
