CreateItemForSpecialItemsForm is an ActionForm
    action is CreateItemMaster
        on completion navigate to ItemMasterInformation
    title is "CreateItemMasterFromSpecialItems"
    Layout
        visible when (PrmExistingItemMasterExists)
            paragraph
                PrmExistingItem
                    label is "ExistingItem"
                    display as text
        visible when (not PrmExistingItemMasterExists)
            paragraph
                visible when (AutomaticItemNumbering)
                    text of "NewItemWillBeSequentiallyAssigned"
                        bold
                visible when (ManualItemNumbering)
                    PrmNewItem
                        label is "ManualItemNumberingUsed;EnterItemNumber"
                    PrmItemOnContract
                        label is "ItemNumberEnteredOnContractLine"
                        display as text
        visible when (not PrmExistingItemMasterExists)
            paragraph
                PrmExistingItemDescription
                    label is "Description"
                PrmExistingItemDescription2
                    label is "Description2"
            single column
                PrmExistingItemDescription3
                    label is "LongDescription"
                    use text area of 2 lines
            two column
                PrmReference1
                    label is "Reference1"
                PrmReference2
                    label is "Reference2"
            two column
                PrmStockUom
                    label is "StockUnitOfMeasure"
                PrmContractUom
                    label is "UOMFromFirstContractLine"
                    display as text
            paragraph
                PrmBuyUom
                    label is "BuyUOM"
                PrmBuyUomConversion
                    label is "ConversionFactor"
                PrmBuyFlag
                    label is "DefaultOrValidBuy"
        visible when (PrmExistingItemMasterExists)
            display as text
                paragraph
                    ItemNumberRel.Description
                        label is "Description"
                    ItemNumberRel.Description2
                        no label
                single column
                    ItemNumberRel.Description3
                        label is "LongDescription"
                        use text area of 2 lines
                two column
                    ItemNumberRel.StockUOM
                        label is "StockUnitOfMeasure"
                    PrmContractUom
                        label is "UOMFromFirstContractLine"
        visible when (not PoitemvenExistsForVendorItem)
            header3 of "UseContractLineUnitOfMeasureFor"
            paragraph
                PrmUseUomForVendorBuy
                    label is "VendorItemBuyUnitOfMeasure"
                PrmUseUomForVendorPrice
                    label is "VendorItemPriceUnitOfMeasure"
        visible when (not PrmExistingItemMasterExists)
            header3 of "AdditionalItemInformation"
            three column
                PrmCommodityCode
                    label is "CommodityCode"
                    compact format
                PrmGeneric
                    label is "GenericName"
            paragraph
                PrmMajorPurchasingClass
                    label is "MajorPurchasingClass"
                    show up to 10 characters
                PrmMinorPurchasingClass
                    label is "MinorPurchasingClass"
                    show up to 10 characters
            paragraph
                PrmMajorInventoryClass
                    label is "MajorInventoryClass"
                    show up to 10 characters
                PrmMinorInventoryClass
                    label is "MinorInventoryClass"
                    show up to 10 characters
            three column
                PrmUnspscCode
                    label is "UnspscCode"
                    compact format
            three column
                PrmUserField1
                    label is "Alpha1"
                PrmUserField2
                    label is "Alpha2"
                PrmUserField3
                    label is "Alpha3"
            three column
                PrmUserField4
                    label is "Alpha4"
                PrmUserField5
                    label is "Alpha5"
            three column
                PrmUserFieldN1
                    label is "Numeric1"
                PrmUserFieldN2
                    label is "Numeric2"
                PrmUserFieldN3
                    label is "Numeric3"
