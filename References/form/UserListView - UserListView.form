UserListView is a Form
    is primary
    title is "ListView"
    Layout
        paragraph
            BusinessView
            TBusinessList
                label is "SelectFromList"
            text of "or"
            BusinessList
                label is "List"
        three column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
        paragraph
            UserListView
                label is "Id"
                display only
        paragraph
            Name
            visible when (SubscribedTo entered)
                SubscribedTo.Name
                    label is "InheritedName"
        paragraph
            Description
            visible when (SubscribedTo entered)
                SubscribedTo.Description
                    label is "InheritedDescription"
        paragraph
            Actor
        paragraph
            UserFolder
                label is "UserFolder"
            UserFolder.Name
                no label
                align as label
                display as text
        paragraph
            DisplayOrder
                display only
            NewDisplayOrder
