MiscellaneousAddOnCostsForARequisitionForm is a Form
    propagate as a drill
    title is "RequisitionAddOnCharge"
    Layout
        three column distributed
            column1
                paragraph
                    AddOnCharge
                        select is MiscellaneousAddOnCharges
                    AddOnCharge.Description
                        no label
                        display as text
            column2
                AddOnChargePercent
                    label is "Rate"
                    when value changed
                        TotalAddOnChargeAmount =  blank
            column3
                paragraph
                    TotalAddOnChargeAmount
                        label is "TotalAddOnCost"
                    ZeroCost
                        when value changed
                            TotalAddOnChargeAmount =  blank
        header2 of "ProcessFlags"
        three column distributed
            column1
                paragraph
                    visible when (false)
                        TransientTaxEntity
                    Taxable
                    visible when (Taxable)
                        TaxCode
                            label is "Add-OnCostTax"
                            select is TaxCodesForEntity
                        TaxCode.TaxCodeAccountsRel.AccruedOrInvoiced
                            label is "Accrual"
                            display as text
                ProductTaxCategory
            column2
                PrintOnRequisition
            column3
                LandedAddOnCharge
                    label is "Landed"
                    display as text
        header2 of "VendorInformation"
        three column distributed
            Vendor
            paragraph
                PurchaseFromLocation
                PurchaseFromLocation.VendorLocation.VendorName
                    no label
                    display as text
            Currency
        three column distributed
            TransientAssetInformation.AssetTemplate
                label is "AssetTemplate"
            TransientAssetInformation.Asset
                label is "Asset"
        single column
            Account
                label is "Account"
                compact format
