MobileMain is a Form
    title is "Main"
    Layout
        single column
            Contact
            ContactTitle
        paragraph
            PhoneNumber
        paragraph
            EmailAddress
            visible when (EmailEntered)
                button of "Send"
                    link is "mailto:<EmailAddress>"
                    display as link
        paragraph
            URLAddress
            visible when (URLEntered)
                button of "View"
                    link is "<URLAddress>"
                    display as link
        blank line
        three column
            CreditAgencyCode
            CreditAgencyDate
            CreditAgencyNumber
        three column
            paragraph
                TaxIdentificationType
                TaxIdentificationType.Description
                    no label
                    display as text
            TaxID
            CheckDigitType
        two column
            paragraph
                VATRegistrationNumber
                    label is "DefaultVATRegistrationNumber"
            paragraph
                VATRegistrationCountry
                    label is "DefaultVATRegistrationCountry/\\Jurisdiction"
        paragraph
            CustomerOrderAddressOverride
                label is "OrderEntryAddressOverride"
        paragraph
            CreditLimit
            TotalCurrentBalance
                display as text
        paragraph
            OrderLimit
            OpenOrderAmount
                label is "OpenOrders"
                display as text
        paragraph
            ReceivableHoldCode
                label is "HoldCode"
            ReceivableHoldCode.Description
                no label
                display as text
        paragraph
            visible when (BillOfExchangeProcessing)
                CurrentBillOfExchangeBalance
                    label is "CurrentBillOfExchangeBalance"
                    display only
