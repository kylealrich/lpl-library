AutomaticPrepaymentApply is an ActionForm
    action is AutomaticPrepaymentApply
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            OprCode
                label is "Operator"
                show up to 15 characters
            OprCode.Name
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        paragraph
            ProcessLevel
                select is ProcessLevels
            ProcessLevel.Name
                no label
                display as text
        single column
            GlDate
                label is "PostDate"
        paragraph
            OverRide
                label is "PostDateOverride"
            DisplayTransactionDate
                label is "DisplayTransactionDate"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AutomaticPrepaymentApplyReport_RDG
            column2 of 25%
                AutomaticPrepaymentApplyReport_XPT
