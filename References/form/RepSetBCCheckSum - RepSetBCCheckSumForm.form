RepSetBCCheckSumForm is a Form
    is primary
    title is "CheckSumField"
    Layout
        paragraph
            ReplicationSet
            RepSetBC.ReplicateClassName
        paragraph
            RepSetBCCheckSum
                label is "Name"
        paragraph
            RepSetBCFieldChoice.RepSetBCField
                select is CheckSumSelect
                when value changed
                    refresh RepSetBCFieldChoice.DerivedFieldNameInfo
                    refresh DerCheckSumInitValue
                    RepSetBCCheckSum =  DerCheckSumInitValue
                    refresh ShowRowStoreField
            visible when (DisplayClientFields)
                text of "-or"
                RepSetBCFieldChoice.RepSetBCClientField
                    select is CheckSumSelect
                    when value changed
                        refresh RepSetBCFieldChoice.DerivedFieldNameInfo
                        refresh DerCheckSumInitValue
                        RepSetBCCheckSum =  DerCheckSumInitValue
                        refresh ShowRowStoreField
            visible when (false)
                DerCheckSumInitValue
            RepSetBCFieldChoice.DerivedFieldNameInfo
            text of "-or"
            RepSetBCFieldChoice.InstanceCount
                when value changed
                    refresh ShowRowStoreField
        visible when (ShowRowStoreField)
            paragraph
                RowStoreField
                    mouse over text is "WhenFieldChoiceIsADerivedField,AsAnExample,SpecifyThePersistentFieldThatBacksThatField.AConditionCanBeAppliedToSplitAFieldAcrossMultipleFieldChoices."
        single column
            Condition
                mouse over text is "<ConditionMessage>"
