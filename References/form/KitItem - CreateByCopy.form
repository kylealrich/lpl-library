CreateByCopy is an ActionForm
    action is CreateByCopy
    Layout
        header3 of "CopyFrom"
        paragraph
            ItemGroup
                label is "FromItemGroup"
                display as text
            ItemGroup.Description
                no label
                display as text
        paragraph
            KitItem.Company
                label is "FromCompany"
                display as text
            KitItem.Company.Name
                no label
                display as text
        paragraph
            KitItem.InventoryLocation
                label is "FromLocation"
                display as text
            KitItem.InventoryLocation.Name
                no label
                display as text
        paragraph
            KitItem.Item
                label is "KitItem"
                display as text
            KitItem.Item.Description
                no label
                display as text
        header3 of "CopyTo"
        paragraph
            visible when (MakeCode.MakeToOrder)
                PrmItemGroup
                    label is "ToItemGroup"
                PrmItemGroup.Description
                    no label
                    display as text
        paragraph
            FromCompanyLocation.FromCompany
                label is "ToCompany"
            FromCompanyLocation.FromCompany.Name
                no label
                display as text
        paragraph
            FromCompanyLocation.FromLocation
                label is "ToLocation"
            FromCompanyLocation.FromLocation.Name
                no label
                display as text
        paragraph
            visible when (MakeCode.MakeToOrder)
                CopyToItem
                    label is "KitItem"
                CopyToItem.Description
                    no label
                    display as text
