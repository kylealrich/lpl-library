CashLedgerRelatedPayablesPaymentCompositeForm is a CompositeForm
    use for action Create
    title is "<DerivedFormTitle>"
    context form is CashLedgerPayablesPaymentForm
        background is theme color
    Actions
        action is Unreleased.Release
            action icon is release
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is MainForm
    AppliedPayables is a Panel
        list is AppaymentRel.PayablesInvoiceApplyPaymentList
            helper list is PayablesAvailableForPaymentRel.PayablesInvoiceApplyPaymentHelperList
                action is ApplySelectedPayablesToCheck
                    invoked.PrmCashCode = CashCode
                    invoked.PrmCashLedgerSourceRecord = CashLedgerSourceRecord
                    invoked.PrmCashLedgerPayablesPayment = CashLedgerPayablesPayment
                valid when (PaymentHelperListIsValid)
        Special Actions
            action is UnapplyAllPayablesFromCheck
            action is SelectAllInvoices
    ApprovalComments is a Panel
        visible when (HasApprovalComments)
        list is CashLedgerPayablesPaymentReasonCodeUsage set.CashLedgerPayablesPaymentReasonCodeUsageList
    ApprovalHistory is a Panel
        visible when (HasWorkunit)
        form is ApprovalHistory
    RelatedInvoiceHistory is a Panel
        visible when (HasApAppHist)
        list is ApapphistRel.PayablesInvoicePaymentHistoryList
