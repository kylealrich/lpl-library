MobileMain is a Form
    title is "Main"
    Layout
        single column
            Company.DerivedCompanyDisplay
                label is "Company"
                display as text
            Name
                label is "LocationName"
        two column table
            column1 of 50%
                HealthIndustryNumber
                visible when (not LocationType.InventoryLocation)
                    FromCompany
                        label is "FromCompany"
                        select is MobileInventoryCompanyList
                ReplenishFromLocation
                    label is "FromLocation"
                    select is MobileInventoryLocations
                    show up to 5 characters
            column2 of 50%
                display as text
                    GlobalLocationNumber
                    visible when (not LocationType.InventoryLocation)
                        FromCompany.Name
                            no label
                    ReplenishFromLocation.Name
                        no label
