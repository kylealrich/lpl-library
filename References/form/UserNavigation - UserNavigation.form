UserNavigation is a Form
    is primary
    Layout
        paragraph
            BusinessView
                label is "<BusinessViewLabel>"
            BusinessNavigation
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserNavigation
                label is "UserNavigationId"
            Description
        single column
            LPL
                use text area of 20 lines
            visible when (Independent)
                LPLIndex
                    display only
                    use text area of 12 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
