RecurringBillingItemOperator is a Form
    is primary
    title is "RecurringBillingItemOperator"
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            RecurringBillingItemOperator.Operator
            RecurringBillingItemOperator.Operator.PersonName.FirstAndLastName
                no label
                display as text
        visible when (IsItemEntered)
            paragraph
                RecurringBillingItemOperator.Item
                RecurringBillingItemOperator.Item.Description
                    no label
                    display as text
        visible when (IsAddOnChargeEntered)
            paragraph
                RecurringBillingItemOperator.Misc
                    label is "AddOnCharge"
                first OrderEntryAddOnChargeRel.Description
                    no label
                    display as text
