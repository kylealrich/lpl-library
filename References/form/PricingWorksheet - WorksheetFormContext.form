WorksheetFormContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
            column2
                PricingWorksheet
                    label is "Worksheet"
                    select is Worksheets
            column3
                Status
                    display as text
        visible when (IsCreated)
            two column distributed
                column1
                    paragraph
                        UpdateCurrency
                            label is "Currency"
                        UpdateCurrency.Description
                            no label
                            display as text
                    paragraph
                        UpdateBaseName
                            label is "Base"
                        UpdateBaseName.Description
                            no label
                            display as text
                column2
                    paragraph
                        UpdateLocation
                            label is "Location"
                        UpdateLocation.Name
                            no label
                            display as text
                    PlannedEffectiveDate
                        label is "EffectiveDate"
                        display as text
        visible when (IsReleasedAndProcessed)
            two column distributed
                column1
                    paragraph
                        UpdateCurrency
                            label is "Currency"
                            display only
                        UpdateCurrency.Description
                            no label
                            display as text
                    paragraph
                        UpdateBaseName
                            label is "Base"
                            display only
                        UpdateBaseName.Description
                            no label
                            display as text
                column2
                    paragraph
                        UpdateLocation
                            label is "Location"
                            display only
                        UpdateLocation.Name
                            no label
                            display as text
                    PlannedEffectiveDate
                        label is "EffectiveDate"
                        display as text
