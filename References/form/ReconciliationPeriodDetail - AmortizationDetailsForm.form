AmortizationDetailsForm is a Form
    Layout
        two column distributed
            column1
                ReconciliationDetail.DetailAmount
                    label is "InitialPrepaidAmount"
                    display as text
                PeriodAmount
                    display as text
                AccumulatedAmortizedAmount
                    label is "AccumulatedAmount"
                    display as text
                RemainingBalance
                    display as text
            column2
                ReconciliationDetail.PeriodTerm
                    display as text
                ElapsedPeriods
                    display as text
                RemainingPeriods
                    display as text
        visible when (ReconciliationDetail.VendorInvoice.PayablesInvoice entered)
            single column
                button of "<ReconciliationDetail.VendorInvoice.PayablesInvoice.Invoice>"
                    link is InvoiceNavigation
                    label is "Invoice"
                    display as link
            four column
                column1
                    ReconciliationDetail.VendorInvoice.PayablesInvoice.InvoiceDate
                        label is "InvoiceDate"
                        display as text
                column2
                    ReconciliationDetail.VendorInvoice.PayablesInvoice.DistributionDate
                        label is "PostDate"
                        display as text
                column3
                    ReconciliationDetail.VendorInvoice.PayablesInvoice.Vendor.VendorName
                        label is "Vendor"
                        display as text
                column4
                    ReconciliationDetail.VendorInvoice.PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                        display as text
