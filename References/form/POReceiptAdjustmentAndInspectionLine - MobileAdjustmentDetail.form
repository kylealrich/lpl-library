MobileAdjustmentDetail is a Form
    title is "AdjustmentDetail"
    Layout
        single column
            display as text
                visible when (LineExists)
                    PurchaseOrderReceiptLine.PurchaseOrderLine.Description
                        label is "ItemDescription"
                    PurchaseOrderReceiptLine.ItemType
                visible when (not LineExists)
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.Description
                        label is "ItemDescription"
                    ReceiptLinesForTemplateRel.ItemType
        single column
            visible when (LineExists)
                paragraph distributed
                    Quantity
                        label is "AdjustmentQuantity"
                    PurchaseOrderReceiptLine.ReceivedUOM
                        label is "UOM"
                        display as text
            visible when (not LineExists)
                paragraph distributed
                    Quantity
                        label is "AdjustmentQuantity"
                    ReceiptLinesForTemplateRel.ReceivedUOM
                        label is "UOM"
                        display as text
            CancelBackorder
            WriteOff
                label is "Write\\-\\OffIfMatched"
            VendorReturn.ReplacementPurchaseOrder
                label is "ReturnNumber"
                display as text
            OvershipReturnQuantity
                label is "OvershipmentReturnQuantity"
                display as text
        visible when (LineExists)
            single column
                PurchaseOrderReceiptLine.Bin
                    label is "OriginalBin"
                    display as text
                Bin
                    label is "AdjustmentBin"
                    select is MobileBinsForALocationSelect
            two column table
                column1
                    PurchaseOrderLine.Quantity
                        label is "QuantityOrdered"
                        display as text
                    PurchaseOrderLine.RejectedQuantity
                        label is "QuantityRejected"
                        display as text
                    PurchaseOrderReceiptLine.OriginalReceivedQuantity
                        display as text
                column2
                    PurchaseOrderLine.EnteredBuyUOM
                        label is "UOM"
                        display as text
                    ValidRejectedQuantityUOM
                        label is "UOM"
                        display as text
                    PurchaseOrderReceiptLine.ReceivedUOM
                        label is "UOM"
                        display as text
            single column
                PurchaseOrderReceiptLine.DerivedOriginalUnitCostInReceivedUOM
                    label is "UnitCost"
                    display as text
            paragraph
                PurchaseOrderReceiptLine.ShipToLocation
                    label is "ReceivedLocation"
                    display as text
                PurchaseOrderReceiptLine.ShipToLocation.Name
                    no label
                    display as text
        visible when (not LineExists)
            single column
                ReceiptLinesForTemplateRel.Bin
                    label is "OriginalBin"
                    display as text
                Bin
                    label is "AdjustmentBin"
                    select is BinsForALocation
            two column table
                column1
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.Quantity
                        label is "QuantityOrdered"
                        display as text
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.RejectedQuantity
                        label is "QuantityRejected"
                        display as text
                    ReceiptLinesForTemplateRel.OriginalReceivedQuantity
                        display as text
                column2
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.EnteredBuyUOM
                        label is "UOM"
                        display as text
                    ValidRejectedQuantityUOM
                        label is "UOM"
                        display as text
                    ReceiptLinesForTemplateRel.ReceivedUOM
                        label is "UOM"
                        display as text
            single column
                ReceiptLinesForTemplateRel.DerivedOriginalUnitCostInReceivedUOM
                    label is "UnitCost"
                    display as text
                paragraph
                    ReceiptLinesForTemplateRel.ShipToLocation
                        label is "ReceivedLocation"
                        display as text
                    ReceiptLinesForTemplateRel.ShipToLocation.Name
                        no label
                        display as text
        single column
            visible when (HasBuyerMessage)
                BuyerMessageDisplay
                    no label
                    display as text
            IsInspection
            visible when (CatchWeightMessage entered)
                CatchWeightMessage
                    no label
                    display as text
            ReceiptLinesForTemplateRel.PurchaseOrderLine.LineNumber
                label is "ReceiverLine"
                display as text
            GlobalLineType
                label is "LineType"
                select is MobileLineTypeCodesSelect
