ConversionDistribution is a Form
    restrict action Create
    restrict action Update
    Layout
        paragraph
            RunGroup
            ErrorMessage
                display as text
        paragraph
            Company
                select is Companies
        paragraph
            InvoiceType
                label is "TransactionType"
        paragraph
            Invoice
                label is "Transaction"
        paragraph
            ReceivableInvoiceRel.Customer
                display as text
        paragraph
            Sequence
                label is "SequenceNumber"
        paragraph
            DistributionAccount
                compact format
        paragraph
            TransactionAmount
        paragraph
            Units
                label is "Unit"
        paragraph
            Description
        paragraph
            TaxCode
                select is TaxCodes
        paragraph
            TransactionTaxableAmount
                label is "TaxableAmount"
        visible when (ShowTaxOriginCrossReference)
            paragraph
                TaxOriginCrossReference
        paragraph
            ErrorMessage
                display as text
