AddReceiptLine is an ActionForm
    action is QuickCreate
    Layout
        single column
            PurchaseOrderLine
                label is "Line"
                select is OpenToReceiveLines
        paragraph
            PurchaseOrderLine.Item
                label is "Item"
                display as text
            PurchaseOrderLine.VendorItem
                label is "VendorItem"
                display as text
        paragraph
            PurchaseOrderLine.Description
                label is "Description"
                display as text
        paragraph
            PurchaseOrderLine.RemainingQuantity
                label is "RemainingQuantity"
            PurchaseOrderLine.EnteredBuyUOM
                no label
        paragraph
            ReceivedQuantity
                label is "Received"
            ReceivedUOM
                no label
                select is ValidBuyUnitsOfMeasure
        single column
            TransientCancelBackOrder
                label is "CancelBackorder"
            TransientInspectionRequired
                label is "InspectionRequired"
