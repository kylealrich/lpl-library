MobilePaymentExpanded is a Form
    title is "PaymentExpanded"
    Layout
        display as text
            visible when (TypeOfPayment.CustomerPayment)
                two column distributed
                    Customer
                        select is CustomerContextCompanyCustomerSelect
                    Customer.Name
                        label is "CustomerName"
                two column distributed
                    ReferenceNumber
                        label is "Reference"
                    ReceivedNotAppliedReceivableGeneralLedgerCode
                        label is RNACodeLabel
            two column distributed
                ReceivablePaymentHeader
                    label is "Batch"
                PaymentNumber
                    label is "Payment"
            two column distributed
                DerivedStatus
                    label is "Status"
                CashCode
                    label is "CashCode"
            two column distributed
                GeneralLedgerDate
                    label is "PostingDate"
                DepositDate
                    label is "DepositDate"
            two column distributed
                ReceivableProcessLevel
                    label is "ProcessLevel"
                CurrencyRate
                    label is "ExchangeRate"
            single column
                ReceivablePayment
                    label is "Sequence"
            two column distributed
                column1
                    Company
                    BaseAmount
                    TransactionAmount
                        label is "Amount"
                    PaymentOpen
                column2
                    Company.Name
                        label is "CompanyName"
                    Company.Currency
                        no label
                    OriginalCurrency
                        no label
            visible when (TypeOfPayment.CustomerPayment)
                two column distributed
                    column1
                        paragraph
                            ReceivablePayment.ReceivablePrepayment.ReferenceType
                                label is "Prepayment"
                            ReceivablePayment.ReceivablePrepayment.Invoice
                                no label
                        ReceivablePaymentHeader.Currency
                            label is "BatchCurrency"
                        ReceivablePaymentHeader.CurrencyRate
                            label is "BatchCurrencyRate"
                        TransferredFromCustomer
                            label is "TransferFromCustomer"
                    column2
                        ReceivablePaymentHeader.ReceivableOperator
                            label is "Operator"
                        CancelDate
                        TransferredToCustomer
                            label is "TransferToCustomer"
                single column
                    paragraph
                        ReceivablePaymentHeader.ReceivableLockBox
                            label is "Lockbox\\,Batch"
                        ReceivablePaymentHeader.LocBoxBatch
                            no label
                    visible when (Cancelled)
                        text of "ReturnToMaker"
                    TransferAmountTransactionCurrency
                        label is "TransferAmount"
                    TransferDate
