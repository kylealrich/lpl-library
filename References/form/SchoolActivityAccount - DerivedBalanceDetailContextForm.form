DerivedBalanceDetailContextForm is a Form
    title is "SchoolBalances"
    Layout
        three column
            StudentActivitySchool
                label is "School"
            SchoolActivityAccount
                label is "Activity"
            SchoolActivityAccount.StudentActivityAccount.Description
        two column
            StudentActivityClosedPeriod
                label is "Period"
            StudentActivityClosedPeriod.GeneralLedgerCalendarPeriod.Date
                label is "PeriodEndDate"
        single column
            DerivedBeginningBalance
                label is "BeginningBalance"
        paragraph
            DerivedPeriodReceipts
                label is "Receipts"
            DerivedPeriodDisbursements
                label is "Disbursements"
            DerivedPeriodTransfers
                label is "Transfers"
        paragraph
            DerivedPeriodEndingBalance
                label is "EndingBalance"
            visible when (HasTransactionDetails)
                button of "CurrentTransactionDetails"
                    link is CurrentTransactionDetails
