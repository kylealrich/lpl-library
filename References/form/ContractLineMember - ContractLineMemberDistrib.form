ContractLineMemberDistrib is a Form
    title is "ContractLineDistributorPricingMember"
    Layout
        two column distributed
            column1
                paragraph
                    PricingIdentifier
                        label is "PricingIdentifier"
                    PricingIdentifier.Title
                        no label
                        display as text
                visible when (MfgContractTierInfo.Tier entered)
                    paragraph
                        ManufacturerLineMemberRel.NetCostOverride
                            label is "Manufacturer'sNetCost"
                            display as text
                        ContractLine.UOM.UnitOfMeasure
                            label is "UOM"
                            display as text
                    visible when (ContractLine.DistributorFixedCost)
                        text of "NoDistributorMarkup"
                            bold
                            color of blue
                visible when (MfgContractTierInfo.Tier not entered)
                    paragraph
                        BaseCost
                            display as text
                        ContractLine.UOM.UnitOfMeasure
                            label is "UOM"
                            display as text
                visible when (not ContractLine.DistributorFixedCost)
                    paragraph
                        PriceFactor
                            label is "DistributorAdjustment"
                            display as text
                        FreightFactor
                            label is "FreightFactor"
                            display as text
                paragraph
                    CurrentNetCost
                        label is "Distributor'sNetCost"
                        display as text
                    NetCostOverride
                        label is "Distributor'sNetCostOverride"
                paragraph
                    Contract.Stockless
                        display as text
                    Priority
                    Modified
                        display as text
            column2
                paragraph
                    visible when (NoHoldOnLineMember)
                        text of "LineMemberIsNotOnHold"
                            bold
                    visible when (HoldFromContract)
                        text of "LineMemberIsOnHoldFromContract"
                            bold
                        visible when (Contract.HoldCodeEntered)
                            Contract.ProcurementReasonCode
                                display as text
                            Contract.ProcurementReasonCode.Description
                                no label
                                display as text
                    visible when (HoldFromContractLine)
                        text of "LineMemberIsOnHoldFromContractLine"
                            bold
                        visible when (ContractLine.HoldCodeEntered)
                            ContractLine.ProcurementReasonCode
                                display as text
                            ContractLine.ProcurementReasonCode.Description
                                no label
                                display as text
                    visible when (HoldFromLineMember)
                        text of "LineMemberIsOnHold"
                            bold
                        visible when (ProcurementReasonCode entered)
                            ProcurementReasonCode
                                display as text
                            ProcurementReasonCode.Description
                                no label
                                display as text
                visible when (MfgContractTierInfo.Tier entered)
                    header2 of "ManufacturerContractInformation"
                    display as text
                        paragraph
                            MfgContractTierInfo.Tier
                                label is "Tier"
                            MfgContractTierInfo.Tier.TierTitle
                                no label
        two column distributed
            column1
                header2 of "DistributorPrice"
                paragraph
                    LineDistributorPricing.PricingMarkupDiscount
                        label is "Type"
                    visible when (not LineDistributorPricing.PricingMarkupDiscount.Fixed)
                        LineDistributorPricing.LineDistributorPricingAmtPct.PricingCost
                            label is "Cost"
                        LineDistributorPricing.LineDistributorPricingAmtPct.PricingPercent
                            label is "Percent"
            column2
                visible when (MfgContractTierInfo.Tier entered)
                    header3 of "ManufacturerTierPrice"
                    display as text
                        paragraph
                            TierMarkupDiscount
                                label is "Type"
                            visible when (not TierMarkupDiscount.Fixed)
                                LineTierPricingAmtPct.TierCost
                                    label is "Cost"
                                LineTierPricingAmtPct.TierPercent
                                    label is "Percent"
        two column distributed
            column1
                header2 of "DistributorFreightFactor"
                paragraph
                    LineDistributorFreightPricing.FreightPricingMarkupDiscount
                        label is "Markup_orDiscount"
                    LineDistributorFreightPricing.LineDistributorFreightPricingAmtPct.FreightCost
                        label is "Cost"
                    LineDistributorFreightPricing.LineDistributorFreightPricingAmtPct.FreightPercent
                        label is "Percent"
            column2
                visible when (MfgContractTierInfo.Tier entered)
                    display as text
                        header3 of "ManufacturerTierFreightFactor"
                        paragraph
                            FreightMarkupDiscount
                                label is "Type"
                            LineFreightPricingAmtPct.FreightCost
                                label is "Cost"
                            LineFreightPricingAmtPct.FreightPercent
                                label is "Percent"
