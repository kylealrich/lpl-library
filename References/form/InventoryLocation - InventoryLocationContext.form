InventoryLocationContext is a Form
    Layout
        three column distributed
            column1
                Picture.File
                    no label
                    align as label
                    display as full image up to 5 lines
                        missing image is missingpicture96px
            column2
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    InventoryLocation
                        label is "Location"
                    Name
                paragraph
                    Status
                    visible when (RecordExists)
                        LocationType
                            display as text
                    visible when (CompanyUsesKitchenOrder)
                        RecipeEnabled
                paragraph
                    visible when (Company.AdvancedWarehouseInUse)
                        visible when (IsPerpetualLocation)
                            UseAsWarehouseLocation
                    visible when (UseAsWarehouseLocation)
                        text of "<WarehouseLocationMessage>"
                            bold
                            italics
                            color of blue
            column3
                visible when (not LocationType.InventoryLocation)
                    paragraph
                        FromCompany
                            label is "FromCompany"
                        FromCompany.Name
                            no label
                            display as text
                    paragraph
                        ReplenishFromLocation
                            label is "FromLocation"
                        ReplenishFromLocation.Name
                            no label
                            display as text
