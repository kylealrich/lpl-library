ViewOnlyMainForm is a Form
    title is "Requisition<Requisition.Requisition>Line<RequisitionLine>"
    Layout
        display as text
            four column distributed
                column1
                    visible when (UseLinkedImage)
                        DerivedImageURL
                            display as image
                    visible when (not UseLinkedImage)
                        DerivedPicture
                            no label
                            align as label
                            display as full image up to 6 lines
                                missing image is random background
                                    foreground text is "<RequisitionLine.RequisitionLineItemAbbreviation>"
                column2
                    paragraph
                        Item
                        Description
                    Manufacturer.DerivedCodeDivisionDescription
                        label is "Manufacturer"
                column3
                    Item.Description2
                        no label
                column4
                    visible when (Item.HasDesc3)
                        Item.Description3
                            no label
            four column distributed
                Vendor
                paragraph
                    VendorItem
                    VendorItem.VendorItemDescription
                        no label
                ItemType
                ServiceCode
            four column distributed
                paragraph
                    Quantity
                    EnteredUOM
                        label is "U\\O\\M"
                TransactionUnitCost
                    label is "UnitCost"
                paragraph
                    ApprovalValue
                        label is "Amount"
                    TransactionCurrencyCode
                        label is "Currency"
                CreatePurchaseOrder
            four column distributed
                paragraph
                    RequestedDeliveryDate
                    LateDeliveryDate
                AllocationPriority
                    label is "Priority"
                CostOption
                OverrideCost
