RSSLPLAddSelectedToNewRequisition is an ActionForm
    action is RSSLPLAddSelectedToNewRequisition
    submit label is "Ok"
    title is "AddSelectedItems_toRequisition"
    Layout
        paragraph
            text of "<Item>_-_<Description>"
                header3
        paragraph
            PrmAddToRequisition
                no label
                display as horizontal radio buttons
        visible when (PrmAddToRequisition.AddToExistingRequisition)
            paragraph
                PrmCompany
                    label is "Company"
                PrmCompany.Name
                    no label
                    display as text
                PrmRequisition
                    label is "Requisition"
                    select is MyUnreleasedRequisitionsSelect
                    initial value is actor.agent(Employee).Employee.Requester.CurrentRequisitionForRQC
        visible when (PrmAddToRequisition.StartNewRequisition)
            visible when (RSSLPLDisplayHeaderInfo)
                header2 of "HeaderInformation"
            paragraph
                PrmCompany
                    label is "Company"
                    when value changed
                        PrmFromCompanyLocation.FromCompany =  PrmRequestingLocation.FromCompanyLocation.FromCompany
                        PrmFromCompanyLocation.FromLocation =  PrmRequestingLocation.FromCompanyLocation.FromLocation
                PrmCompany.Name
                    no label
                    display as text
                PrmRequestingLocation
                    label is "RequestingLocation"
                PrmRequestingLocation.Name
                    no label
                    display as text
                    when value changed
                        PrmFromCompanyLocation.FromCompany =  PrmRequestingLocation.FromCompanyLocation.FromCompany
                        PrmFromCompanyLocation.FromLocation =  PrmRequestingLocation.FromCompanyLocation.FromLocation
            paragraph
                PrmFromCompanyLocation.FromCompany
                    label is "DeliverFromCompany"
                PrmFromCompanyLocation.FromCompany.Name
                    no label
                    display as text
                PrmFromCompanyLocation.FromLocation
                    label is "DeliverFromLocation"
                    select is RQInventoryLocations
                PrmFromCompanyLocation.FromLocation.Name
                    no label
                    display as text
            paragraph
                visible when (DisplayRequestedDeliveryDate)
                    PrmDate
                        label is "RequestedDeliveryDate"
                visible when (RSSLPLAllocationPriorityLevelEnabled)
                    PrmAllocationPriorityLevel
                        label is "Priority"
                        initial value is RSSLPLAllocationPriorityLevelRel.AllocationPriorityLevel
                    PrmAllocationPriorityLevel.Description
                        no label
                        display as text
                visible when (not RSSLPLAllocationPriorityLevelEnabled)
                    PrmAllocationPriority
                        label is "Priority"
                visible when (DisplayRequisitionDescription)
                    PrmRequisitionDescription
                        label is "RequisitionDescription"
