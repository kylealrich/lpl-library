TurnOnFundAccounting is an ActionForm
    action is TurnOnFundAccounting
    Layout
        single column
            text of "AreYouSureYouWantToPerformTheFollowingAction:_Turn_On_Fund_Accounting?"
                align as label
            visible when (PrmFundDimension.Dimension1)
                visible when (not Dimension1ZoneBalancing)
                    text of "PleaseVerify_Zone_BalancingHasBeenEnabled"
                        bold
                        color of red
                        align as label
            visible when (PrmFundDimension.AccountingUnit)
                visible when (AccountingUnitZoneBalancing)
                    text of "PleaseVerify_Zone_BalancingHasBeenEnabled"
                        bold
                        color of red
                        align as label
        single column
            PrmFundDimension
