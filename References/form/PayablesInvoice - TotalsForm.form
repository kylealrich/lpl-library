TotalsForm is a Form
    title is "Totals"
    Layout
        display as text
            visible when (HasMatchInvoiceOutOfBalanceError)
                text of "MatchInvoiceOutOfBalanceError"
                    color of red
        two column
            column1
                display as text
                    TaxAmount
                        label is "InvoiceTaxAmount"
                    TotalDistributionAmount.TransactionTotal
                        label is "TotalDistributionAmount"
                    DerivedTaxToleranceAmount
                        label is "TaxToleranceForThisInvoice"
                    TaxAdjustment
                    POTaxAmount
                    DerivedTotalTaxAmount
                        label is "TotalTaxAmount"
                    DerivedMatchAmount
                        label is "GoodsAmount"
                    DerivedTotalAOCAmount
                        label is "AddOnCostAmount"
                    DerivedTotalServiceAmount
                        label is "ServiceAmount"
                    DerivedInvoiceDetailTotalTaxAmount
                        label is "TaxOnDetailAndAOC"
                    Company.TaxToleranceAmount
                        label is "CompanyTaxToleranceAmount"
                    Company.TaxTolerancePercent
                        label is "CompanyTaxTolerancePercent"
            column2
                display as text
                    DerivedMatchTotals
                        label is "DerivedMatchTotalAmount"
                    DerivedAOCTotalDistributionAmt
                        label is "Derived_A_O_CTotalDistributionAmount"
                    DerivedServiceDetailTotalDistributionAmt
                        label is "DerivedServiceDetailTotalDistributionAmount"
                    DerivedMatchAdditionalDistributionsAmount
                    DerivedMatchAdditionalTax
                    DerivedDetailTotalDistributionAmt
                    visible when (UseDerivedTotalTaxAmount)
                        DerivedTotalTaxAmount
                    visible when (not UseDerivedTotalTaxAmount)
                        DerivedInvoiceDetailTotalTaxAmount
                        DerivedMatchMiscellaneousTaxAmount
                        DerivedMatchAdditionalTax
