PayablesInvoiceEmail is a Form
    is primary
    title is "EmailNotification"
    Layout
        header2 of "InvoiceInformation"
        display as text
            three column distributed
                column1
                    PayablesInvoice.DerivedCompanyNameID
                        label is "Company"
                    PayablesInvoice.DerivedVendorNameID
                    PayablesInvoice.Invoice
                column2
                    PayablesInvoice.Status
                    PayablesInvoice.InvoiceDate
                    PayablesInvoice.VoucherNumberDisplay
                column3
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    PayablesInvoice.DueDate
                    visible when (PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.ProcessingTeam
                    visible when (not PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.APClerk.PreferredSimplePresentationName
                            label is "Processor"
        header2 of "EmailNotificationInformation"
        display as text
            two column distributed
                column1
                    NotificationType
                    SentFromEmailAddress
                    visible when (CCEntered)
                        SentToCcText
                column2
                    SentTimeStamp
                        label is "DateAndTime"
                    SentToEmailAddressText
                    visible when (BCCEntered)
                        SentToBccText
            single column
                EmailSubjectLine
                    label is "EmailSubject"
                EmailContent
                    label is "EmailMessageContent"
                    use text area of 7 lines
                visible when (ActionReasonEntered)
                    DerivedActionReason
                        no label
                visible when (CommentEntered)
                    Comment
                        no label
