BudgetedSalesUpdate is an ActionForm
    action is BudgetedSalesUpdate
    Layout
        paragraph
            Company
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            Year
        paragraph
            BudgetSelect
                label is "Budget"
            BudgetId
                no label
        paragraph
            text of "Or"
        paragraph
            GroupCodeSelect
                label is "GroupCode"
            GroupCode
                no label
        paragraph
            text of "Or"
        paragraph
            CustomerSelect
                label is "Customer"
            Customer
                no label
                select is CustomerSelectList
        paragraph
            ShipTo
            ShipTo.Name
                no label
                display as text
        paragraph
            ContrNbr
                label is "Contract"
        paragraph
            ReportType
                label is "Type"
            Percent
        paragraph
            UpdateOption
                label is "Update"
        paragraph
            PrintDetail
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                BudgetedSalesUpdateReport_RDG
            column2 of 25%
                BudgetedSalesUpdateReport_XPT
