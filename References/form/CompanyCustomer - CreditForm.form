CreditForm is a Form
    Layout
        display as text
            two column distributed
                column1
                    TermsCode
                        label is "PaymentTerms"
                            header4
                            bold
                    CurrentPlusBillOfExchangeBalance
                        label is "CurrentBalance"
                            header4
                            bold
                        raise red alert when (CompanyCustomerAlert)
                            mouse over text is "ExceedsLimit"
                    OpenOrderAmount
                        label is "OpenOrders"
                            header4
                            bold
                    CreditAnalyst.CreditAnalystName
                        label is "CreditAnalyst"
                            header4
                            bold
                column2
                    CreditLimit
                        label is "CreditLimit"
                            header4
                            bold
                    DerivedHighBalance
                        label is "HighBalance"
                            header4
                            bold
                    UnreleasedPayments
                        label is "UnreleasedPayments"
                            header4
                            bold
                    RiskIndicator
                        label is "RiskCode"
                            header4
                            bold
        two column
            column1 of 60%
                button of "CreditReview" with icon.line-bar-chart
                    link is CreditReviewNav
            column2 of 40%
                visible when (IsNationalAccountCustomer)
                    button of "National"
                        link is NationalAccountCreditReviewNav
