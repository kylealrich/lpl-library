Reschedule is an ActionForm
    action is Reschedule
    title is "Schedule"
    Layout
        single column
            NewBegin
                label is "BeginDate"
            NewDue
                label is "DueDate"
        blank line
        single column
            NewDescription
                label is "Description"
            NewNotes
                label is "Notes"
                use text area of 5 lines
        blank line
        visible when (not HasAttachmentOrUrl)
            single column
                AddAttachment
                    label is "AddAnAttachmentOrURL"
        visible when (AddAttachment)
            header3 of "BrowseAndSelectAttachmentOrEnterURL"
            single column
                NewAttachment
                    label is "Attachment"
                NewLink
                    label is "URL"
        visible when (HasAttachmentOrUrl)
            header3 of "UpdateAttachmentOrURL"
            single column
                NewAttachment
                    label is "Attachment"
                NewLink
                    label is "URL"
