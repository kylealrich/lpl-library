InventoryReturnsSummary is a Form
    title is "InventoryReturnSummary"
    Layout
        display as text
            paragraph
                Company
                Company.Name
                    no label
            visible when (TransientOverrideLocation)
                paragraph
                    InventoryLocation
                        label is "Location"
                    InventoryLocation.Name
                        no label
            visible when (not TransientOverrideLocation)
                paragraph
                    OriginatingIssueLocation
                        label is "Location"
                    OriginatingIssueLocation.Name
                        no label
            paragraph
                InventoryTransaction
        header2 of "_"
        single column
            visible when (IsValidForRelease)
                text of "ClickTheButtonBelowToReleaseInventoryReturn"
                    header4
                button of "Release"
                    action is Unreleased.Release
            text of "ClickTheLinkBelowToViewTheInventoryReturn"
                header4
            button of "InventoryReturn"
                link is ViewInventoryReturn
                display as link
