PO304VendorItem is a Form
    title is "VendorItem"
    Layout
        paragraph
            VendorItem
            VendorItem.VendorItemDescription
                no label
                display as text
        visible when (HasVendorItemBuyUOM)
            paragraph
                VendorItem.VendorBuyUOM.UnitOfMeasure
                    label is "BuyU\\O\\M"
                    display as text
                text of "<VendorItem.VendorBuyUOM.UOMConversion>_\\<VendorItem.VendorBuyUOM>per<Item.StockUOM>"
        paragraph
            VendorItem.Manufacturer.ManufacturerCode
                label is "ManufacturerInformation"
                display as text
            VendorItem.Manufacturer.ManufacturerDivision
                no label
                display as text
            VendorItem.ManufacturerNumber
                no label
                display as text
        paragraph
            ItemGTIN
            ItemGTIN.AbbreviatedDescription
                no label
                display as text
        single column
            VendorItem.LabelerIdentificationCode
                label is "L\\I\\CCode"
                display as text
