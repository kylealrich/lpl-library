TierQuantites is a Form
    title is "QuantitiesNeededToReachTiers"
    Layout
        header3 of "QuantitiesNeededToReachTiers"
        visible when (not NegotiationSplitsExist)
            two column
            two column
                text of "Contract1"
                    bold
                Contract1QuantityNeededToAchieveLowerTier
                    label is "QuantityNeededToAchieveLowerTier"
                Contract1QuantityNeededToAchieveHigherTier
                    label is "QuantityNeededToAchieveHigherTier"
                text of "Contract2"
                    bold
                Contract2QuantityNeededToAchieveLowerTier
                    label is "QuantityNeededToAchieveLowerTier"
                Contract2QuantityNeededToAchieveHigherTier
                    label is "QuantityNeededToAchieveHigherTier"
        visible when (NegotiationSplitsExist)
            single column
                DerivedSplitQuantityTotal
                    label is "TotalOfSplitQuantities"
            two column
                text of "Contract1"
                    bold
                first ContractNegotiationSplitsRel.QuantityPurchased
                SplitContract1QuantityNeededToAchieveLowerTier
                    label is "QuantityNeededToAchieveLowerTier"
                SplitContract1QuantityNeededToAchieveHigherTier
                    label is "QuantityNeededToAchieveHigherTier"
                text of "Contract2"
                    bold
                last ContractNegotiationSplitsRel.QuantityPurchased
                SplitContract2QuantityNeededToAchieveLowerTier
                    label is "QuantityNeededToAchieveLowerTier"
                SplitContract2QuantityNeededToAchieveHigherTier
                    label is "QuantityNeededToAchieveHigherTier"
            blank line
            single column
                text of "**QuantitiesNeededMayChangeAsTotalOfSplitQuantitiesChanges**"
