Main is a Form
    Layout
        four column distributed
            column1
                paragraph
                    AllocationControl
                        display as text
                paragraph
                    PostingDate
                        display as text
            column2
                paragraph
                    Status
                        display as text
                paragraph
                    visible when (IsStatusFailedOrHasError)
                        ErrorMessageTag
                            label is "Error"
                            use text area of 1 lines
                            display as tag
                                color of red
            column3
                paragraph
                    visible when (ErrorCount entered)
                        ErrorCount
                            display as text
            column4
                visible when (ListingReport entered)
                    paragraph
                        button of "ListingReport" with icon.pdf-file
                            view ListingReport
                            display as link
                visible when (CalculationReport entered)
                    paragraph
                        button of "CalculationReport" with icon.pdf-file
                            view CalculationReport
                            display as link
                visible when (IsListingReportInProgress)
                    paragraph
                        display as text
                            ListingReportInProgressMessageField
                                no label
                visible when (IsCalculationReportInProgress)
                    paragraph
                        display as text
                            CalculationReportInProgressMessageField
                                no label
        single column distributed
            paragraph
                visible when (RunName entered)
                    RunName
                visible when (RunDescription entered)
                    RunDescription
