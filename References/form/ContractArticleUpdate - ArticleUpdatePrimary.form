ArticleUpdatePrimary is a Form
    is primary
    title is "ArticleApprovalUpdate"
    Layout
        paragraph
            ContractGroup
                display only
            ContractGroup.ProcurementGroup.Description
                no label
                display only
        paragraph
            ContractArticle
                display only
            ContractArticle.Title
                no label
                display only
        single column
            ContractArticleUpdate
                label is "Update"
                display only
            RequestDateTime
                display only
            RequestingActor
                display only
            DerivedRequesterName
                no label
                display only
            DerivedRequesterPhoneNumber
                no label
                display only
            visible when (RequesterEmailAddressExists)
                button of "<DerivedRequesterEmailAddress>"
                    link is "mailto:<DerivedRequesterEmailAddress>"
                    display as link
            RequestType
                display only
            SpecificRequestType
                display only
            Status
                display only
            ActionTaken
                display only
            ApprovalComment
                display only
                use text area of 3 lines
        visible when (DisplayRejectionComment)
            single column
                RejectionComment
                    label is "RejectionComment"
                    display only
                    use text area of 3 lines
        visible when (RequestType.Create)
            single column
                RevisedTitle
                    label is "Title"
                    display only
                RevisedHeaderText
                    label is "HeaderText"
                    display only
        visible when (RequestType.Update)
            single column
                DerivedComparedTitle
                    label is "Title"
                    display only
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display only
