MobileCashLedgerCashReceiptDetailForm is a Form
    title is "CashReceiptDetail"
    Layout
        paragraph
            ReceiptAccount
                label is "FinanceStructure"
                display as text
                compact format only
        visible when (IsRebatePaymentType)
            blank line
            header2 of "Rebate"
            two column table
                column1
                    ContractRebateGroup.ContractGroup
                        display as text
                    ContractRebateGroup.ContractRebateType
                        label is "RebateType"
                        display as text
                column2
                    ContractRebateGroup.Contract
                        label is "CMContract"
                        display as text
                    ContractRebateGroup.ContractRebateDue
                        label is "DueDate"
                        display as text
        blank line
        header2 of "Ledger"
        two column table
            column1
                ReceiptBankAmount
                    label is "Amount"
                    display as text
            column2
                CashCategory
                    label is "Category"
                    display as text
        paragraph
            CatTaxEntity
                label is "EntityForCategoryOrTaxCode"
                display as text
        single column
            visible when (CashAllocationCode entered)
                CashAllocationCode
                    display as text
            visible when (Reference entered)
                Reference
                    display as text
            visible when (Description entered)
                Description
                    display as text
        header2 of "Tax"
        three column table
            column1
                TaxCode
                    label is "TaxCode"
                    display as text
            column2
                TaxableData.CurrencyAmount
                    label is "TaxableAmount"
                    display as text
            column3
                TaxAmountData.CurrencyAmount
                    label is "TaxAmount"
                    display as text
