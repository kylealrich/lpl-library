StudentActivityDistrictForm is a CompositeForm
    is primary
    title is "<mode>SchoolDistrict"
    context form is StudentActivityDistrictContextForm
    show panel control on left
    Actions
        action is Create
        action is Journalize
            hide when invalid
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    DistrictInformation is a Panel
        form is StudentActivityDistrictMain
    DistrictSchools is a Panel
        list is StudentActivitySchool set.CurrentPeriodSchoolList
    Activities is a Panel
        list is StudentActivityAccount set.ActivityAccounts
    AccountCodes is a Panel
        list is StudentActivityAccountCode set.AccountCodeList
    ClosedPeriods is a Panel
        list is ClosedPeriodsRel.StudentActivityClosedPeriods
    SchoolsNotClosed is a Panel
        visible when (SchoolsNotClosed)
        list is SchoolsNotClosedRel.CurrentPeriodSchoolList
    JournalPostings is a Panel
        visible when (DistrictLevelPosting)
        list is UnpostedStudentActivityJournalRel.DescendingActivityJournalList
    GLTransactionDetails is a Panel
        visible when (HasUnprocessedGLTransaction)
        list is GLTransactionDetailsRel.StudentActivityGLTransactionDetails
