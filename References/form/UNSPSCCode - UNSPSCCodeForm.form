UNSPSCCodeForm is a Form
    is primary
    title is "UNSPSCCode"
    Layout
        paragraph
            visible when (not ItemGroupExist)
                ItemGroup
                    select is ItemGroups
                ItemGroup.Description
                    no label
                    display as text
            visible when (ItemGroupExist)
                ItemGroup.ItemGroupDescription
                    label is "ItemGroup"
                    display as text
        paragraph
            visible when (not UNSPSCSegmentExist)
                UNSPSCCode.UNSPSCSegment
                    label is "Segment"
                    display as required
            visible when (UNSPSCSegmentExist)
                UNSPSCCode.UNSPSCSegment
                    label is "Segment"
                    display as text
            visible when (not UNSPSCFamilyExist)
                UNSPSCCode.UNSPSCFamily
                    label is "Family"
            visible when (UNSPSCFamilyExist)
                UNSPSCCode.UNSPSCFamily
                    label is "Family"
                    display as text
            visible when (not UNSPSCClassExist)
                UNSPSCCode.UNSPSCClass
                    label is "Class"
            visible when (UNSPSCClassExist)
                UNSPSCCode.UNSPSCClass
                    label is "Class"
                    display as text
            visible when (not UNSPSCCommodityExist)
                UNSPSCCode.UNSPSCCommodity
                    label is "Commodity"
            visible when (UNSPSCCommodityExist)
                UNSPSCCode.UNSPSCCommodity
                    label is "Commodity"
                    display as text
            UNSPSCCodeDisplay
                display as text
        blank line
        single column
            DescriptionLevel
                display as text
            ShortDescription
            LongDescription
                use text area of 4 lines
