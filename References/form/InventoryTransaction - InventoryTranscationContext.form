InventoryTranscationContext is a Form
    Layout
        visible when (RecordExists)
            three column distributed
                display as text
                    column1
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                        paragraph
                            visible when (DisplayDocumentType)
                                InventoryDocumentType
                                    display as text
                            visible when (not DisplayDocumentType)
                                InventoryTransactionType
                                    label is "DocumentType"
                            Company.GeneralLedgerCompany.Currency
                                label is "Currency"
                    column2
                        paragraph
                            InventoryLocation.RepresentativeText
                                label is "Location"
                        GeneralLedgerDate
                            label is "PostDate"
                    column3
                        InventoryTransaction
                            display as text
                        paragraph
                            visible when (InventoryTransactionType.InventoryReceipt)
                                TransactionDate
                                    label is "ReceivedDate"
                            visible when (InventoryTransactionType.BinTransfer)
                                TransactionDate
                                    label is "TransferDate"
                            visible when (InventoryTransactionType.InventoryTransfer)
                                TransactionDate
                                    label is "TransferDate"
                            visible when (InventoryTransactionType.InventoryIssue)
                                TransactionDate
                                    label is "IssueDateAndTime"
                            visible when (InventoryTransactionType.Adjustment)
                                TransactionDate
                                    label is "AdjustmentDate"
                            visible when (IsInventoryReturns)
                                TransactionDate
                                    label is "ReturnDateAndTime"
                            StatusMsgTagField
                                display as tag
                                    color of yellow when (IsUnreleased)
                                    color of green when (IsReleased)
                                    color of green when (Status.NonGlobalLedger)
                                    color of green when (Status.GlobalLedgerUpdated)
                                    color of yellow when (Status.ReleaseInProgress)
                                    color of yellow when (Status.CreateInProgress)
        visible when (IsReleased)
            visible when (ShowToCompany)
                display as text
                    three column distributed
                        paragraph
                            visible when (InventoryTransactionType.InventoryTransfer)
                                FromToCompanyLocation.FromToCompany.RepresentativeText
                                    label is "ToCompany"
                            visible when (InventoryDocumentType.DirectTransfer)
                                FromToCompanyLocation.FromToCompany.RepresentativeText
                                    label is "ToCompany"
                            visible when (InventoryTransactionType.InventoryIssue)
                                FromToCompanyLocation.FromToCompany.RepresentativeText
                                    label is "ToCompany"
                            visible when (IsIntransitReceivingOrReceivingTransfer)
                                FromToCompanyLocation.FromToCompany.RepresentativeText
                                    label is "FromCompany"
                        paragraph
                            visible when (not IsIntransitReceivingOrReceivingTransfer)
                                FromToCompanyLocation.FromToCompany.RepresentativeText
                                    label is "FromCompany"
                            visible when (IsIntransitReceivingOrReceivingTransfer)
                                FromToCompanyLocation.FromToLocation.RepresentativeText
                                    label is "FromLocation"
                        paragraph
                            visible when (InventoryTransactionType.InventoryTransfer)
                                FromToCompanyLocation.FromToLocation.RepresentativeText
                                    label is "ToLocation"
                            visible when (InventoryDocumentType.DirectTransfer)
                                FromToCompanyLocation.FromToLocation.RepresentativeText
                                    label is "ToLocation"
                            visible when (InventoryTransactionType.InventoryIssue)
                                FromToCompanyLocation.RequestingLocation.RepresentativeText
                                    label is "RequestingLocation"
        visible when (IsInventoryReturns)
            display as text
                three column distributed
                    paragraph
                        FromToCompanyLocation.FromToCompany.RepresentativeText
                            label is "FromCompany"
                    paragraph
                        FromToCompanyLocation.RequestingLocation.RepresentativeText
                            label is "RequestingLocation"
                    paragraph
                        OriginatingIssueLocation
                        OriginatingIssueDocument
