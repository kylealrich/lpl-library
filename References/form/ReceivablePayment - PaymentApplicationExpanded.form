PaymentApplicationExpanded is a Form
    Layout
        display as text
            five column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                        Company.Currency
                            no label
                            display as text
                    paragraph
                        Customer
                        Customer.Name
                            no label
                            display as text
                    button of "<ReceivablePaymentHeader>"
                        link is BatchNav
                        label is "Batch"
                        display as link
                    PaymentNumber
                        label is "Payment"
                    TransactionAmount
                        label is "Amount"
                column2
                    CashCode
                    ReceivedNotAppliedReceivableGeneralLedgerCode
                        label is RNACodeLabel
                    DerivedStatus
                        label is "Status"
                    ReceivableProcessLevel
                        label is "ProcessLevel"
                    PaymentOpen
                        label is "OpenAmount"
                column3
                    DepositDate
                    GeneralLedgerDate
                        label is "PostingDate"
                    OriginalCurrency
                        label is "Currency"
                    CurrencyRate
                        label is "ExchangeRate"
                    visible when (IsNotCompanyCurrency)
                        paragraph
                            BaseAmount
                            PaymentOpenCompanyCurrency
                                label is "BaseOpenAmount"
                column4
                    ReferenceNumber
                        label is "Reference"
                    ReceivablePayment
                        label is "Sequence"
                    ReceivablePaymentHeader.ReceivableOperator
                        label is "Operator"
                    paragraph
                        ReceivablePaymentHeader.ReceivableLockBox
                            label is "Lockbox\\,Batch"
                        ReceivablePaymentHeader.LocBoxBatch
                            no label
                    visible when (IsCompanyCurrency)
                        SingleSpace
                            no label
                        SingleSpace
                            no label
                column5
                    paragraph
                        CancelDate
                        visible when (Cancelled)
                            text of "ReturnToMaker"
                    TransferredToCustomer
                        label is "TransferToCustomer"
                    TransferredFromCustomer
                        label is "TransferFromCustomer"
                    TransferDate
                    TransferAmountTransactionCurrency
                        label is "TransferAmount"
