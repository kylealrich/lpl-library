MAssetContextForm is a Form
    title is "AssetContextForm"
    restrict action Unreleased.Create
    restrict action Unreleased.Delete
    restrict action IncludeInMassSelection
    Layout
        two column independent
            column1
                Picture.File
                    no label
                    align as label
                    display as full image up to 6 lines
                        missing image is missingpicture96px
            column2
                paragraph
                    FinanceEnterpriseGroup
                        display as text
                paragraph
                    Asset
                        display as text
                    DerivedStatus
                        label is "Status"
                        display as text
        single column
            paragraph
                Description
                    display as text
                    show up to 20 characters
        paragraph
            button of "Release"
                visible when (UnreleasedAndNeedsRelease)
                action is Unreleased.Release
            button of "Transfer"
                visible when (TransferAllowed)
                form invoke is MCreateUnreleasedAssetTransfer
            button of "Release"
                visible when (PostReleaseAndNeedsRelease)
                action is PostRelease.Release
            button of "ReleaseDisposal"
                visible when (PostReleaseDisposal)
                action is PostRelease.ReleaseDisposal
            button of "ResetAdjustment"
                visible when (UnreleasedAssetAdjustmentExists)
                action is PostRelease.ResetAdjustment
            button of "ResetTransfer"
                visible when (UnreleasedAssetTransferExists)
                action is PostRelease.ResetTransfer
            button of "ResetDisposal"
                visible when (ResetDisposalIsValid)
                action is PostRelease.ResetDisposal
            button of "ReleaseReinstatement"
                visible when (UnreleasedAssetReinstatementsExists)
                action is PostRelease.ReleaseReinstatement
            button of "ResetReinstatement"
                visible when (UnreleasedAssetReinstatementsExists)
                action is PostRelease.ResetReinstatement
            button of "Dispose"
                visible when (DisposalAllowed)
                action is FullDispose
            button of "Reinstate"
                visible when (Status.Disposed)
                form invoke is MCreateAssetReinstatement
