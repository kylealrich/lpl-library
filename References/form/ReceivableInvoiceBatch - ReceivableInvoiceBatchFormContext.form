ReceivableInvoiceBatchFormContext is a Form
    Layout
        visible when (DoesExist)
            two column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                        display as text
                    paragraph
                        ReceivableInvoiceBatch
                            label is "InvoiceBatch"
                            display as text
                    visible when (BackgroundProcessing.ReleaseInProcess)
                        BackgroundProcessing
                            label is "BackgroundProcessing...RefreshToViewProgress"
                            display as tag
                                color of red
                    visible when (BackgroundProcessing.ReleaseFailure)
                        BackgroundProcessing
                            label is "BackgroundProcessingFinishedWithErrors"
                            display as tag
                                color of red
                    paragraph
                        ReceivableProcessLevel
                            label is "ProcessLevel"
                            display as text
                        ReceivableProcessLevel.Name
                            no label
                            display as text
                column2
                    visible when (DoesExist)
                        Status
                            display as tag
                                color of gray when (Status.Unreleased)
                                color of green
                    paragraph
                        Company.Currency
                            label is "Currency"
                            display as text
                        visible when (OriginalCurrency entered)
                            OriginalCurrency
                                display as text
        visible when (not DoesExist)
            two column distributed
                column1
                    paragraph
                        Company
                            select is ReceivableCompanyList
                        Company.Name
                            no label
                            display as text
                        Company.Currency
                            no label
                            display as text
                    paragraph
                        ReceivableProcessLevel
                            label is "ProcessLevel"
                            select is ProcessLevels
                            display as required
                        ReceivableProcessLevel.Name
                            no label
                            display as text
                column2
                    paragraph
                        ReceivableInvoiceBatch
                            label is "InvoiceBatch"
                        OriginalCurrency
                            no label
                            display as text
                        visible when (DoesExist)
                            Status
                                no label
                                display as text
