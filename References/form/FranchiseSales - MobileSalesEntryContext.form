MobileSalesEntryContext is a Form
    title is "SalesEntryContext"
    Layout
        single column
            Company
            Company.BillingCompany.Name
                label is "CompanyName"
            Customer
                select is CustomerContextCompanySelectList
            Customer.Name
                label is "CustomerName"
            DerivedStatus
                display as text
            CustomerShipTo
                label is "ShipTo"
            CustomerShipTo.Name
                label is "ShipToName"
            FranchiseContract
                label is "Contract"
            FranchiseContract.Currency
                label is "Currency"
                display as text
            visible when (not IsSalesOnly)
                paragraph
                    TotalCharges
                        display as text
                    TotalDue
                        label is "SubmittedTotal"
                        display as text
                    visible when (IsInterfaced)
                        DerivedInvoice
                            label is "Invoice"
                            display as text
        single column
            FranchiseSales.Date
                label is "SalesDate"
            FranchiseSales.SalesType
                label is "SalesType"
            FranchiseSales.AdjustmentNumber
                label is "Adjustment"
