RSSLPLAddNewRequisition is a Form
    title is "KeywordForm"
    Layout
        paragraph
            text of "<Item>_-_<Description>"
                header3
        paragraph
            TransientAddToRequisition
                no label
                display as horizontal radio buttons
        visible when (TransientAddToRequisition.AddToExistingRequisition)
            paragraph
                TransientCompany
                TransientCompany.Name
                    no label
                    display as text
                TransientRequisition
                    label is "Requisition"
                    select is MyUnreleasedRequisitionsSelect
                    display as required when (actor.agent(Employee).Employee.Requester.CurrentRequisitionForRQC not entered)
        visible when (TransientAddToRequisition.StartNewRequisition)
            visible when (RSSLPLDisplayHeaderInfo)
                header2 of "HeaderInformation"
            paragraph
                visible when (RSSLPLDisplayCompany)
                    TransientCompany
                        display as required
                        when value changed
                            TransientFromCompanyLocation.FromCompany =  TransientRequestingLocation.FromCompanyLocation.FromCompany
                            TransientFromCompanyLocation.FromLocation =  TransientRequestingLocation.FromCompanyLocation.FromLocation
                    TransientCompany.Name
                        no label
                        display as text
                visible when (RSSLPLDisplayRequestingLocation)
                    TransientRequestingLocation
                        label is "RequestingLocation"
                        display as required
                        when value changed
                            TransientFromCompanyLocation.FromCompany =  TransientRequestingLocation.FromCompanyLocation.FromCompany
                            TransientFromCompanyLocation.FromLocation =  TransientRequestingLocation.FromCompanyLocation.FromLocation
                    TransientRequestingLocation.Name
                        no label
                        display as text
            paragraph
                visible when (RSSLPLDisplayFromCompany)
                    TransientFromCompanyLocation.FromCompany
                        label is "DeliverFromCompany"
                        display as required
                    TransientFromCompanyLocation.FromCompany.Name
                        no label
                        display as text
                visible when (RSSLPLDisplayFromLocation)
                    TransientFromCompanyLocation.FromLocation
                        label is "DeliverFromLocation"
                        select is RQInventoryLocations
                        display as required
                    TransientFromCompanyLocation.FromLocation.Name
                        no label
                        display as text
            paragraph
                visible when (DisplayRequestedDeliveryDate)
                    TransientRequestedDeliveryDate
                        label is "RequestedDeliveryDate"
                        display as required when (RequesterRel.RequireRequestedDeliveryDate)
                visible when (RSSLPLDisplayAllocationPriorityLevel)
                    paragraph
                        TransientAllocationPriorityLevel.AllocationPriorityLevel
                            label is "Priority"
                        TransientAllocationPriorityLevel.AllocationPriorityLevel.Description
                            no label
                            display as text
                visible when (RSSLPLDisplayPriority)
                    TransientAllocationPriority
                        label is "Priority"
                visible when (DisplayRequisitionDescription)
                    TransientRequisitionDescription
                        label is "RequisitionDescription"
                        display as required when (RequesterRel.RequireRequisitionDescription)
            visible when (RequesterRel.RequireShippingNotes)
                TransientShippingNotes
                    label is "ShippingNotes"
                    display as required when (RequesterRel.RequireShippingNotes)
            visible when (RSSLPLShowRequiredFields)
                header2 of "LineDefaults"
                two column distributed
                    visible when (RequesterRel.RequireDeliverTo)
                        TransientDeliverTo
                            label is "DeliverTo"
                            display as required when (RequesterRel.RequireDeliverTo)
                    visible when (RequesterRel.RequireCommodityCodeDisplay)
                        TransientCommodityCode
                            label is "CommodityCode"
                            display as required when (RequesterRel.RequireCommodityCodeDisplay)
                    visible when (RequesterRel.RequireBuyer)
                        TransientBuyer.Buyer
                            label is "Buyer"
                            display as required when (RequesterRel.RequireBuyer)
                    visible when (RequesterRel.RequirePOCode)
                        TransientPOCode
                            label is "POCode"
                            display as required when (RequesterRel.RequirePOCode)
                    visible when (RequesterRel.RequireVendor)
                        TransientVendor.Vendor
                            label is "Vendor"
                            display as required when (RequesterRel.RequireVendor)
