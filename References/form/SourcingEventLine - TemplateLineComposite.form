TemplateLineComposite is a CompositeForm
    title is "EventTemplateLines"
    context form is TemplateLineContext
        background is theme color
    Line is a Panel
        form is TemplateLine
    Weighting is a Panel
        form is SourcingEventLineWeighting
    Questions is a Panel
        list is SourcingEventLineQuestion set.LineQuestions
            helper list is QuestionRel.EventLineHelperQuestions
                action is AttachToEventLine
    Distributions is a Panel
        visible when (DistributionType.Quantity)
        list is SourcingEventLineDistribution set.QuantityDistribution
    TemplatePercentDistributions is a Panel
        title is "Distributions"
        visible when (DistributionType.Percent)
        list is SourcingEventLineDistribution set.PercentDistribution
    AmountDistributions is a Panel
        title is "Distributions"
        visible when (DistributionType.Amount)
        list is SourcingEventLineDistribution set.AmountDistribution
    Comments is a Panel
        list is SourcingEventLineComment set.LineComment
    Attachments is a Panel
        list is SourcingEventLineAttachment set.LineAttachments
    AOC is a Panel
        visible when (AllowAddOnCharge)
        list is SourcingEventLineAOC set.SourcingEventLineAOCs
