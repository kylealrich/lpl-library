KitItem is a CompositeForm
    is primary
    context form is KitItemContext
        background is theme color
    Options is a Panel
        visible when (MakeCode.MakeToStock)
        form is OptionsForm
    Components is a Panel
        list is KitComponentsRel.Components
    Instructions is a Panel
        visible when (MakeCode.MakeToOrder)
        list is KitInstructionsRel.KitInstructions
    Byproducts is a Panel
        visible when (MakeCode.MakeToStock)
        list is FinishedGoodsByproductsRel.FinishedGoodByproducts
    Burdens is a Panel
        visible when (MakeCode.MakeToStock)
        list is FinishedGoodsBurdensRel.Burdens
    Comments is a Panel
        list is KitItemComment set.KitItemCommentList
