NonARCashContextForm is a Form
    Layout
        three column distributed
            paragraph
                Company
                    display as text
                Company.Name
                    no label
                    display as text
            ReceivablePaymentHeader
                label is "PaymentBatch"
                display as text
            paragraph
                ReceivablePaymentHeader.Status
                    display as tag
                        color of gray when (ReceivablePaymentHeader.Status.OpenBatchUnreleased)
                        color of green
                visible when (DistributionsOutOfBalance)
                    text of "*DistributionsOutOfBalance"
        three column distributed
            PaymentNumber
                display as text
            TransactionAmount
                display as text
            paragraph
                SumOfDistributionsDisplay
                    label is "DistributionTotal"
                    display as text
                visible when (DistributionsOutOfBalance)
                    SumOfDistributionsDifference
                        label is "Difference"
                        display as text
        three column distributed
            visible when (Company.DetailedCashDistributions)
                CashDetailState
                    label is "CashDetails"
                    display as tag
                        color of gray when (CashDetailState.None)
                        color of yellow when (CashDetailState.Unreleased)
                        color of red when (CashDetailState.Amended)
                        color of green when (CashDetailState.Released)
            paragraph
                visible when (BackgroundProcessing.TaxProcessing)
                    text of "Background_Processing..._Refresh_To_View_Progress"
                        header4
                        bold
                        color of red
            paragraph
                visible when (ErrorMessage entered)
                    text of "Error:"
                        header4
                        bold
                        color of red
                    ErrorMessage
                        label is "_"
                        header4
                        bold
                        color of red
                        display as text
