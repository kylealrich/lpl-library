ViewDocumentationForm is a Form
    title is "DocumentDetails"
    Layout
        header3 of "<Description>"
        single column
            Author.FirstAndLastName
                label is "Author"
                display as text
            Notes
                display as text
                use text area of 10 lines
            blank line
            blank line
            button of "ViewAttachment"
                visible when (HasAttachment)
                view Attachment.File
            button of "URL"
                visible when (HasLink)
                link is external "<Link>"
                display as link
