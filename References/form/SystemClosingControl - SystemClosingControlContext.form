SystemClosingControlContext is a Form
    is primary
    propagate as a drill
    title is "SystemControl"
    Layout
        two column
            AccountingEntity
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
            AccountingEntity.Name
                display as text
        two column
            GeneralLedgerSystemCode
                label is "System"
            GeneralLedgerSystemCode.Description
                display as text
        header2 of "InterfaceControls"
        single column
            AutoPost
            HoldCode
        header2 of "OverrideCurrencyTable"
        paragraph
            CurrencyTable
            CurrencyTable.Description
                no label
                display as text
        blank line
        header2 of "ClosingControls"
        single column
            Control
        three column
            ClosedPeriod.GeneralLedgerCloseYear
                label is "ClosedYear"
                display only
            ClosedPeriod
                label is "ClosedPeriod"
                display only
                compact format
            ClosedPeriod.PeriodName
                label is "PeriodName"
                display only
        visible when (ValidSystemCodes)
            two column
                ValidEntryDate.Begin
                    label is "ValidBeginDate"
                ValidEntryDate.End
                    label is "ValidEndDate"
            single column
                OpenPeriods
        visible when (not ValidSystemCodes)
            two column
                ValidBeginDate
                    label is "ValidBeginDate"
                    display only
                ValidEndDate
                    label is "ValidEndDate"
                    display only
            single column
                DerivedOpenPeriods
                    label is "OpenPeriods"
                    display only
