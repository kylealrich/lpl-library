AsyncActionTriggerForm is a Form
    is primary
    title is "ActionTrigger"
    restrict action DeleteMyFinishedTriggers
    restrict action DeleteMyFinishedTriggersForQueue
    restrict action DeleteFinishedTriggersForMyRequest
    Layout
        three column
            AsyncActionRequest.Name
                label is "RequestName"
                display only
            AsyncActionTrigger
                label is "Trigger"
                display only
            Archived
                display only
        three column
            AsyncActionRequest.Actor
                label is "Actor"
                display only
            AsyncActionRequest.AuthenticatedActor
                display only
            AsyncActionRequest.IsProxy
                display only
        two column
            AsyncActionRequest.ImplementingClass
            AsyncActionRequest.AsyncAction
        header2 of "Auditing"
        paragraph
            RequestedStart
                label is "Requested"
                display only
            create stamp
                label is "Created"
                display only
            Started
                display only
            Finished
                display only
            ElapsedTimeComponentsText
                label is "LastElapsedTime"
        header2 of "Properties"
        two column
            AsyncQueueDefinition
                label is "Queue"
                display only
            AsyncLogProducer
                label is "LogProducerName"
                display only
        two column
            Status
                label is "Status"
                display only
            FailureCode
                display only
        two column
            Priority
            SaveHistory
        two column
            NotificationInformation.DerEmailAddressMulti
                display only
            NotificationInformation.NotificationType
                display only
        two column
            RuntimeData
            RemoteRuntimeData
        single column
            visible when (AdditionalInformationEntered)
                AdditionalInfo
                    display only
            visible when (IsErrorState)
                ErrorMessage
                    label is untranslatable:"<ErrorMessage label>"
                        bold
                    display only
                    use text area of 5 lines
                Result
                    label is "Exception"
                    display only
                    use text area of 20 lines
                button of "ViewErrorSummary"
                    link is FailureExceptionSummaryFormNavigation
            visible when (not IsErrorState)
                Result
                    label is "Result"
                    display only
                    use text area
        visible when (HasRunOnErrorAction)
            header2 of "ErrorProcessing"
            single column
                RunOnErrorFailureCode
                    label is "FailureCode"
                    display only
                visible when (IsRunOnErrorFailure)
                    visible when (IsRunOnErrorErrorMessageEntered)
                        RunOnErrorErrorMessage
                            label is untranslatable:"<RunOnErrorErrorMessage label>"
                                bold
                            display only
                            use text area of 2 lines
                    RunOnErrorResult
                        label is "Result"
                        display only
                    button of "ViewErrorSummary"
                        link is FailureRunOnErrorExceptionSummaryFormNavigation
                visible when (not IsRunOnErrorFailure)
                    visible when (IsRunOnErrorErrorMessageEntered)
                        RunOnErrorErrorMessage
                            label is untranslatable:"<RunOnErrorErrorMessage label>"
                                bold
                            display only
                            use text area of 2 lines
                    RunOnErrorResult
                        label is "Result"
                        display only
        header2 of "RetryInformation"
        paragraph
            single column
                RetryStart
                    display only
            two column
                MaxRetries
                    display only
                RetryCount
                    display only
            single column
                button of "RetryNow"
                    valid when (Status.InRetry)
                    action is InRetry.RetryNow
        visible when (HasRunOnErrorAction)
            paragraph
                two column
                    RunOnErrorRetryStart
                        display only
                    RunOnErrorRetryCount
                        display only
        visible when (not AsyncActionRequest.SystemRequest.No)
            header2 of "AttemptInformation"
            paragraph
                AttemptCount
                    display only
                MaxSystemAutoAttempt
                    label is "MaximumAutoAttempts"
                    display only
        header2 of "Requeue"
        paragraph
            button of "RequeueAutomatically"
                valid when (Status.Queued)
                action is Queued.RequeueAutomatic
            button of "RequeueManually"
                valid when (Status.Queued)
                action is Queued.RequeueManual
        visible when (SetActionStats entered)
            header2 of "TransactionStatistics"
            four column
                column1
                    visible when (SetActionStats.EstimatedSetSizeComputed)
                        SetActionStats.DerEstimatedSetSize
                            label is untranslatable:"<SetActionStats.SetSizeMessage>"
                            raise blue alert when (SetActionStats.EstimatedSizeDiscrepancy)
                                mouse over text is untranslatable:"<SetActionStats.EstimatedSizeDiscrepancyMessage>"
                    visible when (not SetActionStats.EstimatedSetSizeComputed)
                        SetActionStats.DerEstimatedSetSizeUnknown
                    SetActionStats.SetRecords
                        display only
                    SetActionStats.SetCommits
                        label is "NumberCommits"
                        display only
                    SetActionStats.CheckPointDurationSeconds
                        display only
                column2
                    visible when (SetActionStats.EstimatedSetSizeComputed)
                        SetActionStats.EstimatedSetComplete
                            label is untranslatable:"<SetActionStats.PercentCompleteMessage>"
                    visible when (not SetActionStats.EstimatedSetSizeComputed)
                        SetActionStats.DerEstimatedSetSizeUnknown
                    SetActionStats.SetFailedObjects
                        label is "FailedPendingCommit"
                        display only
                    SetActionStats.SetCommitObjects
                        label is "ObjectsCommitted"
                        display only
                    SetActionStats.SetAverageCheckPointDurationSeconds
                        label is "AverageCheckpointDurationSeconds"
                        display only
                column3
                    blank line
                    blank line
                    SetActionStats.SetAverageObjectPerCommit
                        label is "AverageObjectsPerCommit"
                        display only
                    SetActionStats.CheckPointHighwaterSeconds
                        display only
                column4
                    blank line
                    blank line
                    SetActionStats.SetCommitHighWater
                        label is "HighWater"
                        display only
                    blank line
        visible when (CanViewRunningStatistics)
            single column
                button of "ViewRunningStatistics"
                    link is ViewRunningStatistics
                    display as link
