GenerateForm1099 is an ActionForm
    action is GenerateForm1099
    Layout
        paragraph
            US1099OutputHeader.DerivedReportYear
                label is "ReportYear"
                display as text
        header3 of "Generation"
        paragraph
            GenerateCopyB
            visible when (US1099OutputHeader.ValidForCopyBWithCopy2)
                visible when (GenerateCopyB)
                    IndividualCopyBFormat
                        no label
        paragraph
            GenerateCopyC
        blank line
        header3 of "PrintOptions"
        visible when (GenerateCopyB)
            paragraph
                PrintCopyB
                visible when (PrintCopyB)
                    CopyBPrinter
                        select is ActiveIDMPrinter
                    CopyBPrinter.Description
                        no label
                        display as text
        visible when (GenerateCopyC)
            paragraph
                PrintCopyC
                visible when (PrintCopyC)
                    CopyCPrinter
                        select is ActiveIDMPrinter
                    CopyCPrinter.Description
                        no label
                        display as text
        blank line
        header3 of "EmailOptions"
        visible when (GenerateCopyB)
            paragraph
                EmailCopyBToVendors
                visible when (not HasVendorEmailAddress)
                    text of "Warning:_Missing_\\VendorEmailAddress" with icon.yellowAlert
                        bold
        visible when (GenerateCopyC)
            paragraph
                EmailCopyCToPayer
                visible when (not HasPayorEmailAddress)
                    text of "Warning:_Missing_\\PayerEmailAddress" with icon.yellowAlert
                        bold
