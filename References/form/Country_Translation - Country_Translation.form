                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.FormattedAddress2
                label is untranslatable:"Formatted Address 2"
            FormattedAddress2
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.NationalIDNumberLabel
                label is untranslatable:"National ID Number Label"
            NationalIDNumberLabel
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.StateProvinceIDNumberLabel
                label is untranslatable:"State Province ID Number Label"
