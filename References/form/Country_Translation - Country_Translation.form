Country_Translation is a Form
    is primary
    Layout
        paragraph
            Base_BusinessClass.Country
                display as text
            Base_BusinessClass.Name
                no label
                display as text
            Base_BusinessClass.StreetAddressEntryOrder
                no label
                display as text
            Base_BusinessClass.CityEntryOrder
                no label
                display as text
            Base_BusinessClass.StateProvinceEntryOrder
                no label
                display as text
            Base_BusinessClass.PostalCodeEntryOrder
                no label
                display as text
            Base_BusinessClass.CountyEntryOrder
                no label
                display as text
            Base_BusinessClass.RegionEntryOrder
                no label
                display as text
            Base_BusinessClass.NationalIDNumberEntryOrder
                no label
                display as text
            Base_BusinessClass.StateProvinceIDNumberEntryOrder
                no label
                display as text
            Base_BusinessClass.LocaleIDNumberEntryOrder
                no label
                display as text
            Base_BusinessClass.IndividualIDNumberEntryOrder
                no label
                display as text
        single column
            IsoLocale
                compact format
                raise yellow alert when (VerifyTranslations)
                    mouse over text is untranslatable:"The base data has been changed but this translation has not been verified"
        single column
            blank line
            header4 of untranslatable:"Translation for {0}"
