APToARInterfaceContextForm is a Form
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        VendorGroup
                        VendorGroup.Description
                            no label
                    paragraph
                        CustomerGroup
                        CustomerGroup.CustomerBusinessGroup.Description
                            no label
                    paragraph
                        TransientSelectedAmount
                            label is "SelectedAmount"
                column2
                    paragraph
                        Vendor
                        VendorName
                            no label
                    paragraph
                        Customer
                            select is CustomerSelectList
                        Customer.Name
                            no label
                    paragraph
                        visible when (not HasCustomer)
                            MissingCustomerMmsg
                                no label
                                display as tag
                                    color of yellow
                column3
                    paragraph
                        DerivedTotalVendorBalance
                            label is "GroupAPBalance"
                        visible when (HasCurrencyMatch)
                            first TotalVendorBalancesRel.BalanceCurrency
                                no label
                    paragraph
                        Customer.CurrentReceivableBalance
                            label is "GroupARBalance"
                        CustomerGroup.Currency
                            no label
                    visible when (HasCurrencyMatch)
                        paragraph
                            DerivedCurrencyNetBalance
                                label is NetCompanyBalanceType
                            CustomerGroup.Currency
                                no label
                    visible when (HasCurrencyMismatch)
                        paragraph
                            NetCompanyBalanceType
                                label is "NetBalance"
                            text of "VendorBalanceCurrenciesDoNotMatch"
                                bold
                                italics
                                color of red
