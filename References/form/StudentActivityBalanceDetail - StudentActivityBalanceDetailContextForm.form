StudentActivityBalanceDetailContextForm is a Form
    title is "SchoolBalances"
    Layout
        three column
            StudentActivitySchool
                label is "School"
            StudentActivityAccount
                label is "Activity"
            SchoolActivityDescription
                label is "Description"
        three column
            StudentActivityClosedPeriod
                label is "Period"
            StudentActivityClosedPeriod.GeneralLedgerCalendarPeriod.Date
                label is "PeriodEndDate"
        single column
            visible when (HasBalanceAdjustment)
                BalanceAdjustment
            BeginningBalance
        paragraph
            PeriodReceipts
                label is "Receipts"
            PeriodDisbursements
                label is "Disbursements"
            PeriodTransfers
                label is "Transfers"
        paragraph
            PeriodEndingBalance
                label is "EndingBalance"
            visible when (HasTransactionDetails)
                button of "TransactionDetails"
                    link is TransactionDetails
