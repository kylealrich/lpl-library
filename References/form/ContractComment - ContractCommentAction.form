ContractCommentAction is an ActionForm
    action is Create
    title is "CreateContractComment"
    Layout
        single column
            Contract.RepresentativeText
                display as text
        three column
            ContractCommentType
                label is "CommentType"
                display as text
            CommentUsedFor
            visible when (Contract.UseIDM)
                PrintOnContract
        single column
            CommentTitle
                label is "Title"
            Description
                use text area of 8 lines
            visible when (EligibleForSourcing)
                SSComment
                    label is "SendCommentToSourcing"
            Attachment.File
                label is "Attachment"
        two column
            EmailAttachment
                label is "IncludeAttachmentInEmail"
            SupplierCanView
