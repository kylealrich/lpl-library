MobilePurchaseOrderLineCommentForm is a Form
    title is "LineComment"
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        single column
            CommentTitle
                label is "Title"
            CommentType
        single column
            CommentText
                label is "Text"
                use text area
        paragraph
            Attachment.File
            visible when (CommentType.PrintOnPurchaseOrder)
                SupplierCanView
            visible when (PurchaseOrder.IssueMethod.Email)
                visible when (CommentType.PrintOnPurchaseOrder)
                    SendToVendor
