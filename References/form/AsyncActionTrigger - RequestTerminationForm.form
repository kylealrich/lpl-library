RequestTerminationForm is an ActionForm
    action is RequestTermination
    title is "RequestTermination"
    Layout
        single column
            visible when (not RemoteRuntimeDataEntered)
                visible when (Status.Finished)
                    text of "TheSystemBelievesTheActionIsComplete.YouMayManuallyEnterTheRemoteDataInformationAndAttemptTerminationIfYouBelieveTheActionIsStillExecuting."
                visible when (not Status.Finished)
                    text of "TheSystemDoesNotBelieveTheActionIsRunning.YouMayManuallyEnterTheRemoteDataInformationAndAttemptTerminationIfYouBelieveTheActionIsStillExecuting."
            visible when (RemoteRuntimeDataEntered)
                visible when (Status.InProgress)
                    text of "TheSystemBelievesTheActionIsRunning.YouMayAttemptTerminationButUseCaution."
                visible when (Status.Finished)
                    text of "TheSystemBelievesTheActionIsComplete.YouMayAttemptTerminationIfYouBelieveTheActionIsStillExecuting."
                visible when (not Status.InProgress)
                    visible when (not Status.Finished)
                        text of "TheSystemDoesNotBelieveTheActionIsRunning.YouMayAttemptTerminationIfYouBelieveTheActionIsStillExecuting."
            text of "TheSystemWillAttemptToLocateTheRunningActionAndMakeATerminationRequest.ThereIsNoGuaranteeTheActionCanBeTerminatedInAllSituations."
            ParamRemoteRuntimeData
            ParamReason
