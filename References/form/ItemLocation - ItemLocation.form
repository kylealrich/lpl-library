ItemLocation is a CompositeForm
    is primary
    title is "Item<Item.DerivedFormTitle>|Location_<InventoryLocation>"
    context form is ItemLocationContext
        background is theme color
    restrict action CopyItemLocation
    Main is a Panel
        visible when (not CartParLocation)
        form is Main
    ItemLocationDetailForParItem is a Panel
        title is "Main"
        visible when (CartParLocation)
        form is ItemLocationDetailForParItem
    Reorder is a Panel
        visible when (not CartParLocation)
        form is Reorder
    Costs is a Panel
        visible when (not CartParLocation)
        form is Costs
    Sales is a Panel
        visible when (DisplaySalesTab)
        form is Sales
    UserFields is a Panel
        visible when (not CartParLocation)
        form is UserFields
    Comments is a Panel
        visible when (not CartParLocation)
        list is ItemLocationComment set.ItemLocationCommentList
    Replenishment is a Panel
        list is ItemReplenishmentSourcesRel.ReplenishmentPriority
    UnitsOfMeasure is a Panel
        title is "Units_ofMeasure"
        list is ItemUOMRel.ItemUOMsForView
    LocationItemUOM is a Panel
        visible when (DisplayLocationStockUOMList)
        list is AllLocationItemUOMRel.LocationItemUOMList
    InventoryBalances is a Panel
        visible when (not CartParLocation)
        form is ItemLocationBalances
    Substitutes is a Panel
        visible when (HasSubstituteItems)
        list is SubstituteItemsRel.ItemSubstitutes
    StockByDetail is a Panel
        visible when (DetailTrackedAtItemLocation)
        list is StockOnHandDetailsRel.StockOnHandDetails
    ItemSerialDetail is a Panel
        visible when (DetailByItemSerail)
        list is ItemSerialNumbersRel.ItemLocationSerialNumbers
    Transactions is a Panel
        visible when (IsInventoryLocation)
        list is InventoryTransactionLinesRel.TransactionLinesForAnItemLocation
    CostHistory is a Panel
        visible when (IsInventoryLocation)
        list is InventoryCostHistoryRel.CostHistoryForAnItemLocation
    DemandAndSupply is a Panel
        visible when (IsInventoryLocation)
        list is WarehouseDemandLinesRel.DemandAndSupply
    ItemStorageLocations is a Panel
        visible when (IsAWarehouseLocation)
        list is ItemStorageLocationsRel.AssignStorageLocationList
            helper list is ItemHasWarehouseStorageLocationRel.WarehouseStorageLocationList
                action is AssignStorageLocation
