AdhocWatcherMain is a Form
    is primary
    title is "AdhocWatcher"
    Layout
        paragraph
            RecallGroup
            RecallGroup.Description
                no label
                display as text
            visible when (AdhocUserExists)
                RecallAdhocUser
                    label is "User"
            Active
        paragraph
            Name.GivenName
                label is "FirstName"
            Name.FamilyName
                label is "LastName"
        paragraph
            Email
            Phone
        single column
            Address
                form is PostalAddressMinimum
