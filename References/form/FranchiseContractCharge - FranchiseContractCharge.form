FranchiseContractCharge is a Form
    title is "ContractCharge"
    Layout
        two column independent
            column1
                Company
                Customer
                    select is CustomerContextCompanySelectList
                FranchiseStandardCharge
                    label is "Charge"
                    compact format
            column2
                paragraph
                    CustomerShipTo
                        label is "ShipTo"
                    CustomerShipTo.Name
                        no label
                        display as text
                paragraph
                    FranchiseContract
                        label is "Contract"
                    Description
                        no label
                Active
        three column
            column1
                NextCycleDate
                    display as text
                BeginDate
                EndDate
            column2
                FranchiseStandardCharge.ChargeType
                    display as text
                TaxableFlag
                    label is "Taxable"
                TaxCode
            column3
                FranchiseStandardCharge.Currency
                    display as text
                Frequency
                ProcessLevel
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            header2 of "SalesTypeChargeDetail"
            two column
                column1
                    PercentOfSales
                    BaseAmount
                column2
                    MinimumAmount
                    MaximumAmount
        blank line
        visible when (FranchiseStandardCharge.ChargeType.NoteBased)
            header3 of "NoteTypeChargeDetail"
            three column independent
                column1
                    NumberOfPayments
                        label is "Number_ofPayments"
                    RemainingPayments
                    PaymentAmount
                column2
                    NoteAmount
                    InterestRate
                    BalanceFlag
                        label is "BalancePrint"
                        show up to 20 characters
                column3
                    CurrentBalance
                    ChargeToDate
            paragraph
                button of "Prepayments"
                    visible when (NoteBasedCharge)
                    action is CreateChargePrepayment
        blank line
        visible when (FranchiseStandardCharge.ChargeType.Special)
            header3 of "SpecialTypeChargeDetail"
            single column
                InitializeSpecialCharges
                    label is "InitializeSpecialCharges"
                        left of field
                PaymentAmount
                    label is "Amount"
        blank line
        header3 of "Accounts"
        single column
            RevenueAccount
                label is "Revenue"
                compact format
            AccrualAccount
                label is "Accrual"
                compact format
            AccrualOffsetAccount
                label is "AccrualOffset"
                compact format
        visible when (FranchiseStandardCharge.ChargeType.NoteBased)
            single column
                NoteAssetAccount
                    label is "NoteAsset"
                    compact format
                NoteAccrual
                    label is "NoteAccrual"
                    compact format
                NoteAccrualOffsetAccount
                    label is "NoteAccrualOffset"
                    compact format
        blank line
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            header3 of "SlidingScale"
            two column independent
                column1
                    paragraph
                        BaseAmount
                            display only
                    blank line
                column2
                    paragraph
                        StepOperand
                            label is "ScaleOption"
                    blank line
            two column independent
                column1
                    paragraph
                        text of "Upper_\\Limit"
                    blank line
                    paragraph
                        StepLimits.StepLimit[1]
                            label is "1"
                    paragraph
                        StepLimits.StepLimit[2]
                            label is "2"
                    paragraph
                        StepLimits.StepLimit[3]
                            label is "3"
                    paragraph
                        StepLimits.StepLimit[4]
                            label is "4"
                    paragraph
                        StepLimits.StepLimit[5]
                            label is "5"
                    paragraph
                        StepLimits.StepLimit[6]
                            label is "6"
                    paragraph
                        StepLimits.StepLimit[7]
                            label is "7"
                    paragraph
                        StepLimits.StepLimit[8]
                            label is "8"
                    paragraph
                        StepLimits.StepLimit[9]
                            label is "9"
                    paragraph
                        StepLimits.StepLimit[10]
                            label is "10"
                column2
                    paragraph
                        text of "Charge_\\Percent"
                    blank line
                    paragraph
                        StepPercents.StepPercent[1]
                            no label
                    paragraph
                        StepPercents.StepPercent[2]
                            no label
                    paragraph
                        StepPercents.StepPercent[3]
                            no label
                    paragraph
                        StepPercents.StepPercent[4]
                            no label
                    paragraph
                        StepPercents.StepPercent[5]
                            no label
                    paragraph
                        StepPercents.StepPercent[6]
                            no label
                    paragraph
                        StepPercents.StepPercent[7]
                            no label
                    paragraph
                        StepPercents.StepPercent[8]
                            no label
                    paragraph
                        StepPercents.StepPercent[9]
                            no label
                    paragraph
                        StepPercents.StepPercent[10]
                            no label
