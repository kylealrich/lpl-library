StorageCodes is a Form
    is primary
    title is "StorageCode"
    Layout
        visible when (not InventoryLocation.UseAsWarehouseLocation)
            visible when (RecordExists)
                paragraph
                    Company.RepresentativeText
                        display as text
            visible when (not RecordExists)
                paragraph
                    Company
                        show up to 10 characters
                    Company.Name
                        no label
                        display as text
            paragraph
                visible when (RecordExists)
                    InventoryLocation.RepresentativeText
                        label is "Location"
                        display as text
                visible when (not RecordExists)
                    InventoryLocation
                        label is "Location"
                        show up to 10 characters
                    InventoryLocation.Name
                        no label
                        display as text
            three column
                visible when (RecordExists)
                    StorageCode
                        display as text
                visible when (not RecordExists)
                    StorageCode
                        show up to 10 characters
                Description
                    show up to 40 characters
                Active
            UnitOfMeasure
                label is "UnitOfMeasure"
                select is MobileUnitOfMeasureList
                show up to 10 characters
                display as required when (not InventoryLocation.UseAsWarehouseLocation)
            MaximumVolume
                label is "MaximumCubic"
            MaximumWeight
                label is "MaximumWeight"
            MaximumQuantity
                label is "MaximumQuantity"
        visible when (InventoryLocation.UseAsWarehouseLocation)
            single column
                visible when (RecordExists)
                    paragraph
                        Company.RepresentativeText
                            display as text
                visible when (not RecordExists)
                    paragraph
                        Company
                            show up to 10 characters
                        Company.Name
                            no label
                            display as text
                paragraph
                    visible when (RecordExists)
                        InventoryLocation.RepresentativeText
                            label is "Location"
                            display as text
                    visible when (not RecordExists)
                        InventoryLocation
                            label is "Location"
                            show up to 10 characters
                        InventoryLocation.Name
                            no label
                            display as text
                paragraph
                    visible when (RecordExists)
                        StorageCode
                            display as text
                    visible when (not RecordExists)
                        StorageCode
                            show up to 10 characters
                    Description
                        show up to 40 characters
                    Active
            header2 of "CapacityLimits"
            two column distributed
                column1
                    paragraph
                        VolumeEntryMethod
                            mouse over text is "EnterVolumeOrCalculateVolumeBasedOnDimensions"
                            display as horizontal radio buttons
                    visible when (VolumeEntryMethod.Enter)
                        paragraph
                            MaximumVolume
                            visible when (not Company.ItemGroup.VolumeUOM.NotSelected)
                                Company.ItemGroup.VolumeUOM
                                    no label
                                    display as text
                    visible when (VolumeEntryMethod.Calculate)
                        paragraph
                            Length
                                display as required when (RequireLength)
                                when value changed
                                    refresh RequireWidth
                                    refresh RequireHeight
                                    refresh DerivedComputedMaximumVolumeAndVolumeUOM
                            Width
                                display as required when (RequireWidth)
                                when value changed
                                    refresh RequireLength
                                    refresh RequireHeight
                                    refresh DerivedComputedMaximumVolumeAndVolumeUOM
                            Height
                                display as required when (RequireHeight)
                                when value changed
                                    refresh RequireLength
                                    refresh RequireWidth
                                    refresh DerivedComputedMaximumVolumeAndVolumeUOM
                        paragraph
                            DerivedComputedMaximumVolumeAndVolumeUOM
                                label is "MaximumVolume"
                                display as text
                column2
                    paragraph
                        MaximumWeight
                        visible when (not Company.ItemGroup.WeightUOM.NotSelected)
                            Company.ItemGroup.WeightUOM
                                no label
                                display as text
                    paragraph
                        MaximumQuantity
                            display as required when (RequireMaximumQuantity)
                            when value changed
                                refresh RequireUOM
                        UnitOfMeasure
                            label is "QuantityUOM"
                            select is MobileUnitOfMeasureList
                            show up to 10 characters
                            display as required when (RequireUOM)
                            when value changed
                                refresh RequireMaximumQuantity
