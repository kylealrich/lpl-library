AllocationLine is a CompositeForm
    is primary
    title is "<DerivedAllocationLineListTile>"
    context form is Main
        background is theme color
    Actions
        action is RunAllocation
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Parameters is a Panel
        form is Parameters
    Structures is a Panel
        visible when (AllocationControl.Type.Actuals)
        form is Structures
    BudgetDefaultStructures is a Panel
        title is "Structures"
        visible when (AllocationControl.Type.Budget)
        form is BudgetStructures
    FromMapping is a Panel
        form is FromMapping
    ToMapping is a Panel
        form is ToMapping
