UserPageForm is a Form
    is primary
    title is "UserPage"
    Layout
        paragraph
            UserPageName
            Description
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserPage
                label is "UserPageId"
        three column
            Actor
            UserFolder
                label is "UserFolder"
            UserFolder.Name
                no label
                align as label
                display as text
        single column
            LPL
                use text area of 25 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
