UpdateStatementDetails is an ActionForm
    action is UpdateStatementDetails
    title is "UpdateStatementDetails"
    Layout
        visible when (false)
            paragraph
                PrmCashManagementGroup
        header3 of "EnterTheSelectionCriteriaToUpdate"
        paragraph
            PrmBankStatementLineDetailSelection
                label is "LineDetailSelection"
            text of "Or"
            PrmApplyToAll
                label is "ApplyToAll"
        header3 of "LineDetailValuesToUpdate"
        paragraph
            PrmCashManagementAccount
                label is "Account"
            PrmCashManagementAccount.Title
                no label
                display as text
        paragraph
            PrmBankStatement
                label is "StatementNumber"
            PrmBankStatementLine
                label is "LineNumber"
                compact format
