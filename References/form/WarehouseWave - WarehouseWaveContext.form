WarehouseWaveContext is a Form
    Layout
        visible when (RecordExists)
            two column distributed
                column1
                    paragraph
                        Company.DerivedCompanyDisplay
                            label is "Company"
                            display as text
                    paragraph
                        InventoryLocation.DerivedInventoryLocationIDName
                            label is "InventoryLocation"
                            display as text
                column2
                    paragraph
                        WarehouseWave
                            display as text
                    paragraph
                        Description
                        Active
        visible when (not RecordExists)
            two column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        InventoryLocation
                        InventoryLocation.Name
                            no label
                            display as text
                column2
                    paragraph
                        WarehouseWave
                    paragraph
                        Description
                        Active
