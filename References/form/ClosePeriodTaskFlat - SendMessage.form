SendMessage is an ActionForm
    action is SendMessage
    submit label is "Send"
    Layout
        paragraph
            text of "EnterA_Resource,_Team_and/or_Email_AddressToSendYourMessageTo." with icon.info
                header4
                color of blue
        paragraph
            MessagePerson
                label is "Resource"
                show up to 16 characters
            MessagePerson.Employee.Name.PreferredFirstAndLastName
                no label
                display as text
        paragraph
            MessageTeam
                label is "Team"
                show up to 16 characters
            MessageTeam.Description
                no label
                display as text
        paragraph
            PrmExternalToEmailAddress
                label is "EmailAddress:"
                mouse over text is "ToEnterMultipleEmailAddresses,SeparateThemWithAComma"
                show up to 20 characters
            PrmAddCcEmail
                label is "AddCc"
            PrmAddBccEmail
                label is "AddBcc"
        single column
            visible when (PrmAddCcEmail)
                PrmCcEmailAddress
                    label is "Cc:"
            visible when (PrmAddBccEmail)
                PrmBccEmailAddress
                    label is "Bcc"
        single column
            PrmSendingLandmarkNotifications
                label is "SendNotifications"
                mouse over text is "CheckToSend_Infor_Landmark_Notifications."
        single column
            DialogueTitle
                label is "Subject"
            Dialogue
                label is "Message"
                use text area of 6 lines
                display as required
            ResponseRequired
                label is "RequireAResponse"
                mouse over text is "CheckToRequireAResponse_from_the_Close_Resource_through_their_home_page_Messages."
        single column
            DialogueAttachment.File
                label is "Attachment"
            DialogueLink
                label is "URL"
