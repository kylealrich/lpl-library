MassUpdateReconciliationAccounts is an ActionForm
    action is MassUpdateReconciliationAccounts
    title is "MassUpdateReconciliationAccounts"
    Layout
        header3 of "ReconciliationAccountSelectionMethod"
        paragraph
            PrmSelectionMethod
                no label
                display as horizontal radio buttons
        visible when (PrmSelectionMethod.AccountSelection)
            paragraph
                PrmReconciliationAccountSelection
                    label is "AccountSelection"
                PrmReconciliationAccountSelection.Condition
                    no label
                    display as text
        visible when (PrmSelectionMethod.AccountRange)
            paragraph
                PrmReconciliationFromAccount
                    label is "FromAccount"
                    raise yellow alert when (true)
                        mouse over text is "AllAccountsWithinA_\\ConsolidatedOr_\\Independent_\\GroupMayBeUpdated"
                PrmReconciliationToAccount
                    label is "ToAccount"
        blank line
        header3 of "ReconciliationAccountValuesToUpdate"
        two column distributed
            PrmAccountType
                label is "AccountType"
            visible when (PrmAccountType.Cash)
                PrmCashAccount
                    label is "CashAccount"
        two column distributed
            PrmRisk
                label is "Risk"
            PrmPriority
                label is "Priority"
        paragraph
            PrmRequiresApproval
                label is "RequiresApproval"
            visible when (PrmRequiresApproval.ChangeToTrue)
                text of "RequiresApprovalWillBeSetToTRUEForAllAccountsBeingUpdated"
                    italics
            visible when (PrmRequiresApproval.ChangeToFalse)
                text of "RequiresApprovalWillBeSetToFALSEForAllAccountsBeingUpdated"
                    italics
        visible when (PrmRequiresApproval.ChangeToTrue)
            paragraph
                PrmApprovalCode
                    label is "ApprovalCode"
                PrmApprovalCode.Description
                    no label
                    display as text
        paragraph
            PrmRequireSupportingDoco
                label is "RequiresSupportingDocumentation"
            visible when (PrmRequireSupportingDoco.ChangeToTrue)
                text of "RequiresSupportingDocumentationWillBeSetToTRUEForAllAccountsBeingUpdated"
                    italics
            visible when (PrmRequireSupportingDoco.ChangeToFalse)
                text of "RequiresSupportingDocumentationWillBeSetToFALSEForAllAccountsBeingUpdated"
                    italics
        paragraph
            PrmReconcileFrequency
                label is "ReconcileFrequency"
            visible when (PrmReconcileFrequency.Quarterly)
                PrmPeriodWithinQuarter
                    label is "PeriodWithinQuarter"
        two column distributed
            paragraph
                PrmReconciliationAccountGroup
                    label is "ReportGroup"
                PrmReconciliationAccountGroup.Description
                    no label
                    display as text
            PrmRemoveReconciliationAccountGroup
                label is "RemoveReportGroup"
        two column distributed
            paragraph
                PrmCloseTask
                    label is "CloseTask"
                    select is TaskSelect
                PrmCloseTask.TaskName
                    no label
                    display as text
            PrmRemoveCloseTask
                label is "RemoveCloseTask"
        two column distributed
            paragraph
                PrmReconciliationPolicy
                    label is "AutoReconciliationPolicy"
                PrmReconciliationPolicy.Description
                    no label
                    display as text
            PrmRemoveReconciliationPolicy
                label is "RemoveAutoReconciliationPolicy"
        paragraph
            PrmFinanceTeam
                label is "Team"
            PrmFinanceTeam.Description
                no label
                display as text
        paragraph
            PrmAssignedResource
                label is "TeamMember"
                compact format
            PrmAssignedResource.PreferredPresentationName
                no label
                display as text
