SubstituteVendorItem is an ActionForm
    action is SubstituteVendorItem
    title is "CreateNewPurchaseOrderLineForADifferentVendorItem"
    Layout
        four column
            column1
                VendorItem
                    label is "OriginalVendorItem"
                    display only
            column2
                PrmOriginalQuantity
                    label is "OrderedQuantity"
            column3
                EnteredBuyUOM
                    label is "UOM"
                    display only
            column4
                VendorBuyUnitCost
                    label is "UnitCost"
                    display only
        four column
            column1
                PrmSubstituteVendorItem
                    label is "SubstituteVendorItem"
                    select is SubstituteVendorItemListForItemAndVendor
            column2
                PrmQuantity
                    label is "OrderedQuantity"
            column3
                PrmEnteredBuyUOM
                    label is "UOM"
            column4
                PrmEnteredUnitCost
                    label is "UnitCost"
        visible when (SubstituteLinesExist)
            paragraph
                single column
                    button of "ViewSubstituteLines"
                        link is POLineSubstituteDetail
