ApplyAnInvoiceToThisCreditActionForm is an ActionForm
    action is ApplyAnInvoiceToThisCredit
    title is "ApplyAnInvoiceToThisCredit"
    Layout
        paragraph
            PrmCompany
                label is "Company"
                display as text
            PrmVendor
                label is "Vendor"
                display as text
        paragraph
            PrmPayablesInvoice
                label is "Invoice"
                select is PayablesAvailableToApplyToCredit
            PrmPayablesInvoice.Invoice
                no label
                display as text
        paragraph
            PrmAppliedAmount
                label is "AppliedAmount"
