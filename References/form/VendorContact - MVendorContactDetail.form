MVendorContactDetail is a Form
    title is "VendorContact"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            label is "_"
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        two column table
            column1
                VendorGroup
                    display as text
                Vendor
                    display as text
            column2
                VendorGroup.Description
                    label is "Description"
                    display as text
                Vendor.VendorName
                    label is "VendorName"
                    display as text
        single column
            VendorLocation
                label is "Location"
            visible when (VendorLocation entered)
                VendorLocation.VendorName
                    label is "LocationName"
                    display as text
        paragraph
            VendorContact.VendorContactCode
                label is "Contact"
            VendorContact.ContactLevel
                label is "ContactLevel"
        single column
            ContactName
                label is "Name"
            VendorAddress
            AddressEffectiveDate
                label is "EffectiveDate"
        single column
            header3 of "_"
            EmailAddress
                label is "Email"
            header3 of "_"
            PhoneNumber
            header3 of "_"
            MobileNumber
            header3 of "_"
            FaxNumber
            header3 of "_"
            TwitterID
        single column
            CommentText
                label is "Comment"
                use text area of 12 lines
