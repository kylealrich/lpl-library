CreditReviewDetails is a CompositeForm
    title is "ReceivableInvoiceDetailForm"
    context form is CreditReviewContextForm
        background is theme color
    Details is a Panel
        visible when (not DisplaySummarizedLines)
        form is CreditReviewDetailForm
    LineItems is a Panel
        title is "Lines"
        visible when (DisplaySummarizedLines)
        list is ReceivableInvoiceDetailRel.LineItemsList
