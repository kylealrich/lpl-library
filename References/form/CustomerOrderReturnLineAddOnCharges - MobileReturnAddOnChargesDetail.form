MobileReturnAddOnChargesDetail is a Form
    title is "ReturnAddOnChargesDetail"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            label is "_"
        action is Delete
            hide when invalid
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            CustomerOrderReturn
        paragraph
            visible when (IsLineCharge)
                CustomerOrderReturnLine
                    label is "Line"
        paragraph
            CustomerOrderReturnLineAddOnCharges
                label is "Sequence"
                display as text
            Miscellaneous
                label is "Charge"
                compact format
        paragraph
            EnteredUnitPrice
                label is "PerUnit"
            UnitCost
                no label
        paragraph
            EnteredPrice
                label is "FlatAmount"
            Cost
                no label
        paragraph
            PricePercent
                label is "Percentage"
            CostPercent
                no label
        paragraph
            OrderDiscount
                label is "Discountable"
        header2 of "RevenueData"
        paragraph
            SalesAccount
                label is "SalesAccount"
                compact format
        header2 of "CostOfGoodsData"
        paragraph
            CostOfGoodsSoldAccount
                label is "COGSAccount"
                compact format
