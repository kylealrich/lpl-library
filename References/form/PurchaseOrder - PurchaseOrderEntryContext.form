PurchaseOrderEntryContext is a Form
    Layout
        four column distributed
            visible when (PurchaseOrderExists)
                column1
                    Company.RepresentativeText
                        label is "Company"
                        display as text
                column2
                    display as text
                        paragraph
                            PurchaseOrder
                            visible when (PurchaseOrderRevisionEntered)
                                PurchaseOrderRevision
                                    label is "Revision"
                column3
                    display as text
                        paragraph
                            CalculateTotalAmount
                                label is "Total"
                            Currency.Currency
                                no label
                column4
                    display as text
                        paragraph
                            DerivedPurchaseOrderStatus
                                label is "Status"
                            DerivedStatusDate
                                no label
                            visible when (HasIssuedDocument)
                                visible when (HasExistingPODocument)
                                    button of "View"
                                        view first LatestPODocumentRel.Attachment.File
                                        label is "Document"
                                        display as link
                                visible when (HasIDMDocument)
                                    button of "View"
                                        link is external "<DerivedIDMDocumentLink>"
                                        label is "Document"
                                        display as link
                        visible when (HasIDMJobError)
                            paragraph
                                IDMStatusMessage
                                    no label
                                    display as tag
                                        color of red
                                button of "View_IDM_Job"
                                    link is IDMJob
                                    display as link
        paragraph
            visible when (BudgetEditInProgress)
                BudgetEditMessage
                    no label
                    display as tag
                        color of red
            visible when (BudgetEditFailure)
                BudgetFailureMessage
                    no label
                    display as tag
                        color of red
            visible when (LineErrorsExist)
                paragraph
                    LineErrorMessage
                        no label
                        display as tag
                            color of red
                    button of "ViewLineErrors"
                        visible when (LineErrorsExist)
                        link is PurchaseOrderLineErrorLink
                        display as link
        paragraph
            visible when (HasLinesWithSpecialHandling)
                paragraph
                    SpecialHandlingInstructionMessage
                        no label
                        display as tag
                            color of yellow
                    button of "<SpecialHandlingInstructionListMessage>"
                        link is SpecialHandlingNav
                        display as link
