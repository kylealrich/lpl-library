TemplateTransferPricingEntityContext is a Form
    title is "BillToEntity"
    restrict action CombineEntity
    Layout
        two column distributed
            column1
                TransferPricing
                    label is "RechargeName"
                    display as text
                PayablesCompanyDescription
                    label is "GlobalPayablesCompany"
                    display as text
            column2
                AccountingEntity
                    label is "BillToEntity"
                    display as text
                button of "CombinedEntities"
                    visible when (TransferPricingGlobalEntity.HasAdditionalEntities)
                    list is TransferPricingGlobalEntity.TransferPricingGlobalAdditionalEntity set.GlobalAdditionalEntityForBillAllEntitiesList
                    display as link
