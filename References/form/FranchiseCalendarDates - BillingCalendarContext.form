BillingCalendarContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        Company
                    visible when (RecordExists)
                        Company.BillingCompany.RepresentativeText
                            display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        FranchiseCalendar
                            label is "Calendar"
                            select is CalendarID
                    visible when (RecordExists)
                        FranchiseCalendar.RepresentativeText
                            label is "Calendar"
                            display as text
            column3
                paragraph
                    visible when (FranchiseCalendarDates.Year not entered)
                        FranchiseCalendarDates.Year
                            label is "Year"
                        FranchiseCalendarDates.Frequency
                            label is "Frequency"
                    visible when (FranchiseCalendarDates.Year entered)
                        FranchiseCalendarDates.Year
                            label is "Year"
                            display as text
                        FranchiseCalendarDates.Frequency
                            label is "Frequency"
                            display as text
