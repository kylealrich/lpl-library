ReturnedPaymentContextAction is a Form
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
            Company.Currency
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
            visible when (not IsNonAR)
                CompanyCustomerRel.CreditAnalyst
                    label is "CreditAnalyst"
                    display as text
        paragraph
            ReceivablePaymentHeader
                label is "Batch"
                select is ReceivablePaymentHeaderList
            ReceivablePaymentRel.ReceivableProcessLevel
                label is "ProcessLevel"
                display as text
            ReceivablePaymentRel.GeneralLedgerDate
                label is "PaymentPostDate"
                display as text
        paragraph
            RTMPayment
                label is "Payment"
            ReceivablePaymentRel.OriginalCurrency
                no label
                display as text
            ReceivablePaymentRel.TransactionAmount
                label is "PaymentAmount"
                display as text
            ReceivablePaymentRel.AppliedAmount
                label is "AppliedAmount"
                display as text
        paragraph
            ReturnDate
            GeneralLedgerDate
                label is "ReturnPostDate"
            visible when (IsCustomerPayment)
                RevalueCurrencyTransactions
            visible when (not RTMPaymentExists)
                Billback
        paragraph
            Description
                label is "Description"
