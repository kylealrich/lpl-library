StatementBalances is a Form
    title is "StatementBalances"
    Layout
        visible when (not ManuallyCreatedStatement)
            display as text
                three column distributed
                    column1
                        BeginningBalance
                        OpeningLedger
                        OneDayFloat
                    column2
                        EndingBalance
                        OpeningAvailable
                        TwoOrMoreDaysFloat
                    column3
                        text of "_"
                        ClosingAvailable
                        ThreeOrMoreDaysFloat
        visible when (ManuallyCreatedStatement)
            three column distributed
                column1
                    BeginningBalance
                    OpeningLedger
                    OneDayFloat
                column2
                    EndingBalance
                    OpeningAvailable
                    TwoOrMoreDaysFloat
                column3
                    text of "_"
                    ClosingAvailable
                    ThreeOrMoreDaysFloat
        blank line
        visible when (AccountCurrencyDifferentFromBase)
            header3 of "CorporateBaseAmounts"
            display as text
                three column table
                    column headers
                        "Amount"
                        "Currency"
                        "Rate"
                    row headers
                        "BeginningBalance"
                        "EndingBalance"
                    column1
                        BeginningCorporateBaseCurrencyBalance
                            no label
                        CorporateBaseEndingBalance.EnteredCurrencyAmount
                            no label
                    column2
                        CashManagementGroup.Currency
                            no label
                        CashManagementGroup.Currency
                            no label
                    column3
                        BeginningCorporateBaseCurrencyRate
                            no label
                        CorporateBaseEndingBalance.EnteredCurrencyRate
                            no label
        blank line
        visible when (AccountCurrencyDifferentFromCompany)
            header3 of "Company:<CashManagementAccount.LegalEntity>"
            display as text
                three column table
                    column headers
                        "Amount"
                        "Currency"
                        "Rate"
                    row headers
                        "BeginningBalance"
                        "EndingBalance"
                    column1
                        BeginningCompanyCurrencyBalance
                            no label
                        CompanyCurrencyEndingBalance.EnteredCurrencyAmount
                            no label
                    column2
                        CashManagementAccount.LegalEntity.Currency
                            no label
                        CashManagementAccount.LegalEntity.Currency
                            no label
                    column3
                        BeginningCompanyCurrencyRate
                            no label
                        CompanyCurrencyEndingBalance.EnteredCurrencyRate
                            no label
        blank line
        visible when (AccountCurrencyDifferentFromLocation)
            header3 of "Location:<CashManagementAccount.CashManagementLocation>"
            display as text
                three column table
                    column headers
                        "Amount"
                        "Currency"
                        "Rate"
                    row headers
                        "BeginningBalance"
                        "EndingBalance"
                    column1
                        BeginningLocationCurrencyBalance
                            no label
                        LocationCurrencyEndingBalance.EnteredCurrencyAmount
                            no label
                    column2
                        CashManagementAccount.CashManagementLocation.Currency
                            no label
                        CashManagementAccount.CashManagementLocation.Currency
                            no label
                    column3
                        BeginningLocationCurrencyRate
                            no label
                        LocationCurrencyEndingBalance.EnteredCurrencyRate
                            no label
        single column
            button of "AllStatementBalances"
                visible when (HasBalances)
                link is StatementBalancesNav
                display as link
            text of "_"
        visible when (StatementType.PreviousDay)
            single column
                button of "ReconciliationBalances"
                    link is ReconciliationBalancesNavigation
                    display as link
