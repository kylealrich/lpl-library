Chargeback is an ActionForm
    action is Chargeback
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            Vendor
                select is VendorName
            Vendor.VendorName
                no label
                display as text
        paragraph
            Invoice.InvoiceGrp[1]
                label is "Chargeback"
            Invoice.InvoiceGrp[2]
                no label
        paragraph
            Invoice.InvoiceGrp[3]
                no label
            Invoice.InvoiceGrp[4]
                no label
        two column
            column1 of 63%
                paragraph
                    FrDate
                        label is "FromDate"
                    ToDate
                        label is "ToDate"
            column2 of 37%
                RecStatus
                    label is "Status"
        two column
            column1
                header3 of "Options"
                paragraph
                    PrintComments
                        label is "Comments"
                    ReceiptOption
                        label is "ReceiptDetail"
                paragraph
                    DetailOption
            column2
                header3 of "Include"
                paragraph
                    PrintHoldCb
                        label is "Chargebacks_onHold"
                    PrintManlCb
                        label is "ManualChargebacks"
                paragraph
                    PrintPrevCb
                        label is "PreviouslyPrinted"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ChargebackReport_RDG
                Chargeback_RDG
            column2 of 25%
                ChargebackReport_XPT
                Chargeback_XPT
