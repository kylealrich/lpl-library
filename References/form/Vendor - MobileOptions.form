MobileOptions is a Form
    title is "Options"
    Layout
        header2 of "Invoice"
        two column table
            column1
                MaximumInvoiceAmount
                    label is "MaxInvoiceAmount"
                PaymentPriority
                    label is "Priority"
            column2
                PrimeRate
                    label is "AnticipationRate"
                blank line
        single column
            AutomaticEmailingOfCreditMemo
            ValidateDiversityDates
                label is "ValidateDiversityDates"
            ValidateCertificationDate
                label is "ValidateCertificationDate"
        header2 of "Payment"
        single column
            TermsCode
                label is "PaymentTerms"
            TermsCode.Desc1
                no label
                display as text
            CashCode
            CashCode.Description
                no label
                display as text
            BankTransactionCode
            BankTransactionCode.Description
                no label
                display as text
            DiscountCode
            DiscountCode.Description
                no label
                display as text
            PayablesProcessGroup
            PayablesProcessGroup.Description
                no label
                display as text
            InvoiceGroup
            PayImmediately
                label is "PayImmediately"
            SeparatePayment
                label is "SeparatePayment"
            Enclosure
                label is "Enclosure"
        header2 of "Codes"
        single column
            AuthorityCode
            AuthorityCode.Description
                no label
                display as text
            DistributionCode
            DistributionCode.Description
                no label
                display as text
            AccrualCode
            AccrualCode.Description
                no label
                display as text
            RetainageAccrualCode
            RetainageAccrualCode.Description
                no label
                display as text
            ForeignEconomicRegulatoryCode
            ForeignEconomicRegulatoryCode.Description
                no label
                display as text
            TaxCode
                select is TaxCodeFilteredList
            TaxCode.Description
                no label
                display as text
            TaxUsageCode
            TaxUsageCode.Description
                no label
                display as text
            Project
            Project.Project.Description
                no label
                display as text
            InvoiceRoutingCategory
            InvoiceRoutingCategory.Description
                no label
                display as text
            visible when (not ValidateDiversityDates)
                DiversityCode
                    label is "DefaultDiversityCode"
                DerivedDiveristyDescription
                    no label
                    display as text
            visible when (ValidateDiversityDates)
                DiversityCode
                    label is "DefaultDiversityCode"
                    display as text
                DerivedDiveristyDescription
                    no label
                    display as text
                visible when (DiversityCode entered)
                    button of "ChangeDiversityCode"
                        link is DefaultDiversityCodes
                visible when (DiversityCode not entered)
                    button of "SetDefaultDiversityCode"
                        link is DefaultDiversityCodes
        header2 of "Match"
        single column
            MatchPrepayment
                label is "MatchPrepayment"
            MatchPrepaymentMethod
                display as required when (MatchPrepayment)
            CreatePOD
                label is "ProofOfDelivery"
            HoldUntilInspected
            PoolOption
            RequirePurchaseOrder
            AllowZeroCostInvoice
            RequireMatchReference
                label is "RequireMatchReference"
                    left of field
            ChargebackMinimumAmount
                label is "AutoChargebackMinimum"
            AutomaticChargebackHoldCode
                label is "AutoChargebackHold"
            AutomaticChargebackHoldCode.Description
                no label
                display as text
            TermsCalculation
            FloatDays
            MatchTable
            MatchTable.Description
                no label
                display as text
            RuleGroup
            RuleGroup.Description
                no label
                display as text
            CostComponentMatch
        header2 of "Returns"
        single column
            ReplaceGoods
                label is "ReplaceGoods"
            WriteOffAmount
                label is "MinimumClaimAmount"
            ShipOrHold
                label is "ShipOrHoldGoods"
            VendorClaimType
            visible when (VendorClaimType.Chargeback)
                paragraph
                    VendorClaimHoldCode
                        label is "VendorClaimsChargebackHold"
        header2 of "ProcurementCard"
        single column
            UseProcurementCard
                label is "UseProcurementCard"
            visible when (UseProcurementCard)
                MaskedProcurementCard
                    display only
                button of "Add_\\/UpdateProcurementCard"
                    action is UpdateProcurementCard
            visible when (HasProcurementCard)
                visible when (not UseProcurementCard)
                    text of "<ProcurementCardUncheckMessage>"
                        bold
                        color of red
        header2 of "ExpenseManagement"
        single column
            ExpenseDefault
                compact format
        header2 of "E\\D\\I"
        single column
            EDINumber
            EDIAutoRelease
                label is "E\\D\\IInvoiceAutomaticRelease"
            ERSCapable
                label is "ERSCapable"
            visible when (ERSCapable)
                paragraph
                    InvoiceReference
                        label is "E\\R\\SInvoiceReference"
                        display as required when (ERSCapable)
        header2 of "Miscellaneous"
        single column
            LanguageCode
                label is "Locale"
                compact format
            CreateDate
                display as text
            CaseNumber
            URLAddress
            button of "FollowURLAddress"
                visible when (HasURLAddress)
                link is external "<Vendor.URLAddress>"
