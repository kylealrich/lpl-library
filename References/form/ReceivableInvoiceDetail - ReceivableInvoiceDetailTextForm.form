ReceivableInvoiceDetailTextForm is a Form
    Layout
        display as text
            paragraph
                Company
            paragraph
                ReceivableProcessLevel.RepresentativeText
            paragraph
                BatchNumber
            paragraph
                GeneralLedgerDate
            paragraph
                TransactionDate
            paragraph
                DueDate
            blank line
            paragraph
                TransientSignedTransactionAmount
                OriginalCurrency
                TransientSignedOpenAmount
            visible when (IsNonBaseCurrency)
                paragraph
                    InvoiceAmount.FunctionalAmount.EnteredCurrencyAmount
                        label is "FunctionalAmount"
                        display as text
                    BaseOpenAmount
                        display as text
                    InvoiceAmount.FunctionalAmount.EnteredCurrencyRate
                        no label
                        display as text
            visible when (IsAppliedOrAdjusted)
                two column
                    ApplicationAmount.CurrencyAmount
                        label is "AppliedAmount"
                        display as text
                    AdjustmentAmount.CurrencyAmount
                        display as text
                visible when (IsNonBaseCurrency)
                    two column
                        ApplicationAmount.FunctionalAmount.EnteredCurrencyAmount
                            label is "ApplicationFunctionalAmount"
                            display as text
                        AdjustmentAmount.FunctionalAmount.EnteredCurrencyAmount
                            label is "AdjustmentFunctionalAmount"
                            display as text
            visible when (IsDiscount)
                two column
                    DiscountDate.DiscDate[1]
                        label is "DiscountDate"
                        display as text
                    DiscountAmount.OrigDiscAmt[1]
                        label is "DiscountAmount"
                        display as text
            visible when (IsMultipleDiscount)
                two column
                    DiscountDate.DiscDate[2]
                        label is "Discount2Date"
                        display as text
                    DiscountAmount.OrigDiscAmt[2]
                        label is "Discount2Amount"
                        display as text
                two column
                    DiscountDate.DiscDate[3]
                        label is "Discount3Date"
                        display as text
                    DiscountAmount.OrigDiscAmt[3]
                        label is "Discount3Amount"
                        display as text
            paragraph
                CustomerPurchaseOrder
                    label is "PurchaseOrder"
                    display as text
            paragraph
                FinanceDimension2
                    label is "<GeneralLedgerCompanyRel.FinanceEnterpriseGroup.FinanceDimension2Label>"
                ProjectContract.DisplayContract
                    label is "<GeneralLedgerCompanyRel.FinanceEnterpriseGroup.ProjectLabel>Contract"
                Project
                    label is "<GeneralLedgerCompanyRel.FinanceEnterpriseGroup.ProjectLabel>"
            blank line
            paragraph
                LastFinanceChargeDate
                    label is "Last:_FinanceChargeDate"
                    display as text
                LastStatementDate
                    label is "StatementDate"
                    display as text
                LastDunningLetterDate
                    label is "DunningLetterDate"
                    display as text
                LastDunningLetter
                    label is "DunningLetter"
                    display as text
            paragraph
                ReceivableCrossReference
            paragraph
                BankTransactionCode
                    label is "PaymentCode"
                BankTransactionCode.BankTransactionType
                    label is "TransactionCategory"
                Origin
                TermsCode
            paragraph
                ReceivableInvoiceRel.System
                SalesRepresentative
                CustomerBillTo
                    label is "BillTo"
                ItemReference
                ReceivableInvoiceRel.AlternateReceivableInvoiceType
                    label is "AlternateInvoiceType"
