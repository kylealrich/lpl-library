SharePersonalization is an ActionForm
    action is SharePersonalization
    title is "SharePersonalization"
    Layout
        display as text
            three column
                ConfigEntity.Name
                    label is "Name"
                    header3
                ConfigEntity.Actor
                    label is "Actor"
                    header3
                ConfigEntity.BusinessView
                    header3
        header3 of "ShareWith_anActor_or_anActorGroup"
        single column
            Actor
            text of "Or"
        paragraph
            ActorGroup
                select is ActorGroupHierarchyWithCountsSelectList
            ActorGroupDescendants
                label is "IncludeActorGroupDescendants"
        visible when (ActorGroup entered)
            paragraph
                ActorGroup.GroupMemberImmediateCount
                    label is "ImmediateMemberCount"
                    display as tag
                        color of blue
                visible when (ActorGroupDescendants)
                    ActorGroup.GroupMemberExpandedRollupCount
                        label is "RollupMemberCount"
                        display as tag
                            color of purple
            single column
                text of "Note:_ThisIsA_'PointInTime'_ActionThatIsSharedOnlyWithTheCurrent_Actor_GroupMembers.LaterAdditionsToThe_Actor_GroupWillNotAutomaticallyBeGrantedThis_Personalization."
        header3 of "ConflictManagement"
        paragraph
            OverrideExistingPersonalizations
                label is "AnActorPersonalizationAlreadyExists"
                display as horizontal radio buttons
