MobileCreateVehicleTrip is an ActionForm
    action is Created.MobileCreate
    title is "CreateTrips"
    Layout
        paragraph
            Company
                show up to 5 characters
            Company.Name
                label is "_"
                display as text
        paragraph
            InventoryLocation
                show up to 5 characters
            InventoryLocation.Name
                label is "_"
                display as text
        paragraph
            Vehicle
                select is VehicleRel.VehicleList
                show up to 5 characters
            Vehicle.Description
                label is "_"
                display as text
        paragraph
            visible when (VehicleOperatorDisplayAsText)
                VehicleOperator
                    display as text
            visible when (not VehicleOperatorDisplayAsText)
                VehicleOperator
                    show up to 10 characters
        paragraph
            WarehouseDock
                label is "LoadingDock"
                select is WarehouseDockRel.AllActiveWarehouseDockList
                show up to 5 characters
