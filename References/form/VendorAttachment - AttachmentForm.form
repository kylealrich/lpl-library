AttachmentForm is a Form
    is primary
    title is "Attachment"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        VendorGroup
                        VendorGroup.Description
                            no label
                column2
                    paragraph
                        Vendor
                        Vendor.VendorName
                            no label
                column3
                    paragraph
                        VendorLocation
                            label is "Location"
                        VendorLocation.VendorName
                            no label
        two column
            column1
                VendorAttachment
                    label is "AttachmentNumber"
                    display as text
                Description
                Attachment.File
            column2
                SecureVendorAttachment
