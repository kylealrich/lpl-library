CashApplicationResultContext is a Form
    propagate as a drill
    title is "<DerivedFormTitle>"
    Layout
        display as text
            four column distributed
                column1
                    visible when (PrmCompany entered)
                        paragraph
                            PrmCompany.RepresentativeText
                                label is "Company"
                            PrmCompany.Currency
                                no label
                    visible when (PrmCompanyGroup entered)
                        PrmCompanyGroup
                            label is "CompanyGroup"
                    RunTime
                    Status
                        display as tag
                            color of green when (Status.Complete)
                            color of gray when (Status.InProcess)
                column2
                    paragraph
                        PrmSelectOnly
                            label is "SelectOnly"
                        PrmEFTOrigin
                            label is "EFTOrigin"
                    PostDatePlusOverride
                        label is "PostDate,Override"
                    PrmOverrideMethod
                        label is "OverrideMethod"
                column3
                    PrmNatCredits
                        label is "NationalCredits"
                    PrmCurrencyOverride
                        label is "CurrencyOverride"
                    PrmFirstAttemptRemittanceOnly
                        label is "FirstAttemptRemittanceOnly"
                column4
                    PrmOperator
                        label is "Operator"
                    paragraph
                        PrmBatchNumber
                            label is "BatchNumber"
                    PrmApplicationCode
                        label is "ApplicationCode"
                    visible when (IsAlgorithmValuesEntered)
                        text of "Algorithm"
                            bold
                            align as label
                        PrmVariance
                            label is "Variance"
                        paragraph
                            PrmReasonCode
                                label is "ReasonCode"
                            PrmReasonCode.Description
                                no label
                        paragraph
                            PrmMaxInvoices
                                label is "MaximumInvoices"
                            PrmCombination
                                label is "Combination"
