MMainForm is a Form
    title is "MainForm"
    Layout
        header3 of "LocationInformation"
        two column distributed
            LocationType
            NormalRemitToLocation
        two column distributed
            paragraph
                RemitToCode
                RemitToCode.VendorName
                    no label
                    display as text
            NormalPurchaseFromLocation
        two column distributed
            VendorAccount
            GlobalLocationNumber
                display as text
        paragraph
            VATRegistrationCountry
                label is "V\\A\\TCountry/\\Jurisdiction"
            VATRegistrationNumber
            visible when (VendorGroup.BusinessGroup.UseHSNSACCode)
                paragraph
                    TaxRegistrationType
        header3 of "Currency"
        paragraph
            InvoiceCurrency
                label is "Invoice"
            RevalueCurrency
                label is "Revalue"
        header3 of "CurrentAddress"
        visible when (not RecordExists)
            VendorAddress
        visible when (RecordExists)
            two column
                column1
                    display as text
                        CurrentAddressRel.FullAddressDisplay
                            label is "PostalAddress"
                column2
                    button of "ChangeAddress"
                        form invoke is ChangeCurrentAddress
                        display as link
        header3 of "PrimaryContact"
        visible when (not RecordExists)
            two column
                column1
                    ContactName
                    PhoneNumber
                    MobileNumber
                    FaxNumber
                    EmailAddress
                column2
                    TwitterID
                    SocialNetworkID2
                    SocialNetworkID3
                    SocialNetworkID4
                    SocialNetworkID5
        visible when (RecordExists)
            display as text
                two column
                    column1
                        PrimeVendorLocationContactRel.ContactName
                        PrimeVendorLocationContactRel.PhoneNumber.InternationalPrefix
                            label is "PhoneCountry/\\JurisdictionCode"
                        PrimeVendorLocationContactRel.PhoneNumber.SubscriberNumber
                        PrimeVendorLocationContactRel.PhoneNumber.Extension
                        PrimeVendorLocationContactRel.MobileNumber.MobilePhoneNumber.InternationalPrefix
                            label is "MobileCountry/\\JurisdictionCode"
                        PrimeVendorLocationContactRel.MobileNumber.MobilePhoneNumber.SubscriberNumber
                        PrimeVendorLocationContactRel.MobileNumber.MobilePhoneNumber.Extension
                        PrimeVendorLocationContactRel.FaxNumber.InternationalPrefix
                        PrimeVendorLocationContactRel.FaxNumber.SubscriberNumber
                        PrimeVendorLocationContactRel.FaxNumber.Extension
                        PrimeVendorLocationContactRel.EmailAddress
                    column2
                        PrimeVendorLocationContactRel.TwitterID
                        PrimeVendorLocationContactRel.SocialNetworkID2
                        PrimeVendorLocationContactRel.SocialNetworkID3
                        PrimeVendorLocationContactRel.SocialNetworkID4
                        PrimeVendorLocationContactRel.SocialNetworkID5
