PerpetualGlobal is a Form
    Layout
        header2 of "LeadTime"
        three column distributed
            column1
                LeadTimeLengthCutoff
                    label is "LeadTimeLengthCutoff_(Days)"
            column2
                MinimumLeadTimeValues
                    label is "MinimumNumberOfLeadTimeValues"
            column3
                DefaultLeadTimeVariability
                    label is "DefaultLeadTime_(Days)"
        paragraph
            DefaultLeadTimeSource
                label is "InCaseOfInsufficientLeadTimeHistory"
            visible when (DefaultLeadTimeSource.SpecialistParameter)
                text of "IgnoreLeadTimesFromItemLocation,AssignDefaultLeadTimeFromRules"
                    italics
            visible when (DefaultLeadTimeSource.ItemLocation)
                text of "UseLeadTimesFromItemLocationFirst.IfEmptyThenAssignDefaultLeadTimeFromRules"
                    italics
        paragraph
            IncludeLeadTimesOnVendorChange
                label is "Include_lead_times_before_the_lastPrimaryVendor_change"
        header2 of "ValidationAndFilters"
        two column distributed
            column1
                MinimunOnHandPeriodCutoff
                    label is "MinimumOnHandTimePeriodCutoff_(Weeks)"
                IssuesSimPeriodCutoff
                    label is "MinimumIssueDaysToQualifyForSimulation"
                DecreasingRecMinimumOnhandLevel
                    label is "MinimumOnHandLevelThreshold_(InDays)"
            column2
                TotalIssuesCutoff
                    label is "MinimumIssueDaysToQualifyForAnalysis"
                StartDateCutoff
                    label is "MinimumDaysOfHistory"
                DemandSpikeThreshold
                    label is "DoNotRecommendIfDemandSpikeExists_(TimesTheAverage)"
        blank line
        header2 of "SimulationParameters"
        two column distributed
            column1
                ReorderPointOffset
                    label is "ReorderPointOffset_(Units)"
            column2
                FloorMultiplier
                    label is "FloorMultiplier"
