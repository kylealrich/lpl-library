AutoMatchResultContext is a Form
    Layout
        visible when (not DoneProcessing)
            paragraph
                text of "***AutoMatchInProgress.ClickRefreshToUpdate***"
                    bold
        visible when (ProcessingCompleteNoRecords)
            paragraph
                text of "<NoRecordsFoundForCriteriaMsg>"
                    bold
                    italics
        visible when (TerminatedInvoicesExist)
            paragraph
                text of "<ProcessingErrorsMsg>"
                    bold
                    italics
        display as text
            three column table
                column headers
                    "Count"
                    "Amount"
                row headers
                    "TotalMatchInvoices"
                    "Unmatched"
                    "InvoicesInError,MatchNotAttempted"
                column1
                    TotalCountMatchInvoices
                        no label
                        display zero
                    UnmatchedCount
                        no label
                        display zero
                    ErrorCount
                        no label
                        display zero
                column2
                    TotalAmountMatchInvoices
                        no label
                        display zero
                    UnmatchedAmount
                        no label
                        display zero
                    ErrorAmount
                        no label
                        display zero
                column3
                    blank line
                    blank line
                    visible when (DoneProcessing)
                        text of "TotalRunTime:<DerivedElapsedTime>"
