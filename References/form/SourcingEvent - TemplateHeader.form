TemplateHeader is a Form
    title is "EventTemplate-Header"
    Layout
        single column
            Description
                use text area
                display as required when (DescriptionAndSourcingEventTypeRequired)
        two column
            column1 of 30%
                EventReference
                    label is "Reference"
            column2 of 70%
                SourcingEventType
                    label is "Type"
                    select is SupplierEventTypes
                    display as required when (DescriptionAndSourcingEventTypeRequired)
        two column
            paragraph
                Buyer
                    display as required when (BuyerRequired)
                Buyer.Employee.PresentationNameSnapshot
                    no label
                    display as text
        two column
            column1 of 30%
                CurrencyCode
            column2 of 70%
                AllowResponseInOtherCurrency
        paragraph
            Category
                label is "Category"
                select is BuyerCategories
            Category.Description
                no label
                display as text
        paragraph
            SubCategory
                label is "SubCategory"
                select is BuyerSubCategories
            SubCategory.Description
                no label
                display as text
        two column
            column1 of 30%
                PostingOptions
                    label is "SupplierPortalPostingOptions"
            column2 of 70%
                DisplayPlanHoldersList
        two column
            column1 of 30%
                CreateAmendments
            column2 of 70%
                OnlyNotifyResponders
                    label is "SendAmendmentNotificationsOnly_toRespondingSuppliers"
        two column
            column1 of 30%
                InformalQuote
                    label is "DatesNotRequiredOnEvent"
            column2 of 70%
                AllowSupplierQandA
                    display as required when (SourcingEventQandASetExists)
        single column
            visible when (UseBidTabulation)
                DisplayBidTabulation
        header2 of "ResponseOptions"
        two column
            column1 of 30%
                Sealed
                    label is "SealedBid"
            column2 of 70%
                TwoStepBidding
        two column
            column1 of 30%
                RequireBidBond
            column2 of 70%
                visible when (RequireBidBond)
                    BidBondPercent
        two column
            column1 of 30%
                BestAndFinalOffer
            column2 of 70%
                RequireAllLines
                    label is "RequireResponseForAllLines"
                    display as required when (WeightingCriteria.PriceWeighting entered)
        two column
            column1 of 30%
                RequireFullQuantity
                    label is "RequireFullQuantityOnLines"
            column2 of 70%
                DisplayLowestBidAmount
                    label is "DisplayLowestBidAmountToSupplier"
                    display as required when (DisplayLowestBidAmountRequired)
        two column
            column1 of 30%
                LowestBidOption
                    when value changed
                        refresh DisplayLowestBidAmountRequired
            column2 of 70%
                AllowAddOnCharge
        two column
            column1 of 30%
                AllowTermsToBeNegotiated
            column2 of 70%
                AllowAlternateResponses
        single column
            VendorItemProcessing
            DeliveryDateResponseRequired
        header2 of "DefaultLineMiscellaneous"
        two column
            OutputType
        paragraph
            DefaultShipTo
                label is "ShipTo"
            DefaultShipTo.Name
                no label
                display as text
        header2 of "DefaultLineDistributionInformation"
        paragraph
            DefaultAccount
                compact format
        two column
            AssetInformation.Asset
            AssetInformation.AssetTemplate
