ReceivableInvoiceRecordsPurge is an ActionForm
    action is ReceivableInvoiceRecordsPurge
    title is "TransactionPurge"
    Layout
        single column
            paragraph
                PrmCompany
                PrmCompany.Name
                    no label
                    display as text
                PrmCompany.Currency
                    no label
                    display as text
            paragraph
                text of "Or"
            paragraph
                PrmCompanyGroup
                    label is "CompanyGroup"
                PrmCompanyGroup.Description
                    no label
                    display as text
            PrmInvoiceDate
                label is "CutoffDate"
                display as text
        blank line
        header2 of "Transactions"
        single column
            text of "Select_one_or_more_of_the_following_options"
        two column distributed
            column1
                PrmInvoicesPurge
                PrmInvoiceBatchPurge
                PrmPaymentsPurge
            column2
                PrmGLRecordsPurge
                PrmCommentsPurge
                visible when (PrmCommentsPurge)
                    PrmCommentType
                        label is "CommentType"
                        display as required
                PrmPaymentNoticeDetailPurge
        header2 of "Customers"
        paragraph
            PrmCustomer
                label is "Customer"
            PrmCustomer.Name
                no label
                display as text
        blank line
        paragraph
            PrmMajClass
                label is "MajorClass"
            PrmMajClass.Description
                no label
                display as text
        paragraph
            PrmMinClass
                label is "MinorClass"
            PrmMinClass.Description
                no label
                display as text
        paragraph
            PrmCreditAnlyst
                label is "CreditAnalyst"
            PrmCreditAnlyst.Name
                no label
                display as text
        paragraph
            PrmSalesman
                label is "SalesRepresentative"
            PrmSalesman.Name
                no label
                display as text
