TermAndConditionUpdatePrimary is a Form
    is primary
    title is "TermAndConditionApprovalUpdate"
    Layout
        paragraph
            ContractGroup
                display only
            ContractGroup.ProcurementGroup.Description
                no label
                display only
        paragraph
            ContractArticle
                display only
            ContractArticle.Title
                no label
                display only
        paragraph
            ContractTermAndCondition
                display only
            ContractTermAndCondition.Title
                no label
                display only
        single column
            ContractTermAndConditionUpdate
                label is "Update"
                display only
            RequestDateTime
                display only
            RequestingActor
                display only
            DerivedRequesterName
                no label
                display only
            DerivedRequesterPhoneNumber
                no label
                display only
            visible when (RequesterEmailAddressExists)
                button of "<DerivedRequesterEmailAddress>"
                    link is "mailto:<DerivedRequesterEmailAddress>"
                    display as link
            RequestType
                display only
            SpecificRequestType
                display only
            Status
                display only
            ActionTaken
                display only
            ApprovalComment
                display only
                use text area of 3 lines
        visible when (DisplayRejectionComment)
            single column
                RejectionComment
                    label is "RejectionComment"
                    display only
                    use text area of 3 lines
        visible when (RequestType.Create)
            single column
                RevisedTitle
                    label is "Title"
                    display only
                RevisedHeaderText
                    label is "HeaderText"
                    display only
                RevisedDescription
                    label is "Description"
                    display only
        visible when (RequestType.Update)
            single column
                DerivedComparedTitle
                    label is "Title"
                    display only
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display only
                DerivedComparedDescription
                    label is "Description"
                    display only
        visible when (SpecificRequestType.AddAttachment)
            single column
                NewAttachmentDisplayOrder
                    display only
                NewAttachment.File
                    label is "NewAttachment"
                    display only
                NewAttachmentReference
                    label is "NewAttachmentReference"
                    display only
        visible when (AttachmentToBeDeleted)
            header2 of "AttachmentToBeDeleted"
            single column
                TermAndConditionAttachmentRel.DisplayOrder
                    display only
                TermAndConditionAttachmentRel.Attachment.File
                    label is "Attachment"
                    display only
                TermAndConditionAttachmentRel.AttachmentReference
                    display only
            header2 of "_"
        visible when (AttachmentHasBeenDeleted)
            header2 of "AttachmentToBeDeleted"
            single column
                DeletedAttachment.File
                    label is "Attachment"
                    display only
                DeletedAttachmentRef
                    label is "AttachmentReference"
                    display only
            header2 of "_"
