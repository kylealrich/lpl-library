PortalAllContracts is a CompositeForm
    title is "Contract<ContractNbr>"
    disable field options
    called out actions only
    context form is PortalContractContext
        background is theme color
    Actions
        navigation is PrintAnonymousContract
            label is "PrintContract"
        navigation is SupplierLineAttachments
            label is "ViewLineAttachments"
            hide when invalid
        action is EmailFromSupplier
            label is "EmailPrimaryContact"
            hide when invalid
            valid when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
        action is CreateSupplierMessageAndDialog
            label is "StartADialog"
            hide when invalid
            valid when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
    TermsAndConditions is a Panel
        visible when (TermsExist)
        form is TermsAndConditions
    Lines is a Panel
        visible when (ContractLinesExist)
        list is ContractLine set.SupplierPortalAllContractLineList
    ChangeOrders is a Panel
        visible when (AnyCompletedOrRejectedChangeOrderExists)
        list is ContractVersionsRel.SupplierContractChangeOrders
    Contacts is a Panel
        visible when (ContractAttachedContactExist)
        list is SupplierContactRel.PortalSummaryAttachedContacts
    Comments is a Panel
        visible when (HasSupplierContractComments)
        list is SupplierContractCommentsRel.SupplierPortalContractCommentList
    Attachments is a Panel
        visible when (HasSupplierContractAttachments)
        list is SupplierContractAttachmentsRel.SupplierPortalContractAttachmentList
