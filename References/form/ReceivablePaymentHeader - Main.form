Main is a Form
    Layout
        visible when (not Status.ReleasedBatch)
            visible when (not RecordExists)
                two column distributed
                    column1
                        paragraph
                            Company
                            Company.Name
                                no label
                                display as text
                    column2
                        ReceivablePaymentHeader
                            label is "PaymentBatch"
            paragraph
                ReceivableProcessLevel
                    label is "ProcessLevel"
                    display as required when (true)
                ReceivableProcessLevel.Name
                    no label
                    display as text
            two column distributed
                column1
                    paragraph
                        DepositDate
                        GeneralLedgerDate
                            label is "GlobalLedgerDate"
                column2
                    Reference
            two column distributed
                column1
                    paragraph
                        CashCode
                            select is CashCodeForCompanyList
                        CashCode.Description
                            no label
                            display as text
                column2
                    paragraph
                        DepositBankCode
                        DepositBankCode.Description
                            no label
                            display as text
            two column distributed
                column1
                    paragraph
                        CurrencyTable
                        Currency
                column2
                    CurrencyRate
            header2 of "_"
            five column table
                column headers
                    "Control"
                    "Entry"
                    "Difference"
                row headers
                    "Count"
                    "Amount"
                column1
                    BatchCount
                        no label
                    BatchTotal
                        no label
                column2
                    DetailCount
                        no label
                        display as text
                    DetailTotal
                        no label
                        display as text
                column3
                    CountDifference
                        no label
                        display as text
                    TotalDifference
                        no label
                        display as text
