MMAHSControlSummaryForm is a Form
    title is "MonitoringControl"
    Layout
        three column
            Priority
                label is "Priority"
                display only
            MonitorActive
                label is "Active?"
                display as tag
                    color of green when (MonitorActive)
                    color of yellow when (not MonitorActive)
            NotifyOnError
                label is "NotifyOnError?"
                display as tag
                    color of green when (NotifyOnError)
                    color of yellow when (not NotifyOnError)
        single column
            Description
                label is "Description"
                display only
        two column
            MonitorType
                label is "Type"
                display only
            visible when (MonitorType.Interface)
                InterfaceDirection
                    label is "InterfaceDirection"
                    display only
        two column
            visible when (MonitorType.AsyncScan)
                AsyncMonitorARName
                    label is "ActionRequestName"
                    display only
                AsyncMonitorBusinessView
                    label is "BusinessClass"
                    display only
                AsyncMonitorAction
                    label is "AsyncAction"
                    display only
                AsyncMonitorMappingField1
                    label is "MappingField1"
                    display only
                AsyncMonitorMappingField2
                    label is "MappingField2"
                    display only
                AsyncMonitorErrorMessage
                    label is "ErrorMessageContains"
                    display only
        paragraph
            visible when (NotifyOnError)
                text of untranslatable:"Notify"
                    bold
        visible when (NotifyOnError)
            two column
                NotifyTo
                    label is "To"
                    display only
                NotifyCC
                    label is "CC"
                    display only
        paragraph
            visible when (IPAFlowMonitorExists)
                TotalLinkedIPAFailureCount
                    label is "TotalIPAFailures"
                        left align
                    display as tag
                        color of red when (HasIPAFlowFailures)
                        color of green when (not HasIPAFlowFailures)
                TotalLinkedIPAErrorCount
                    label is "TotalIPAErrors"
                    display as tag
                        color of orange when (HasIPAFlowErrors)
                        color of green when (not HasIPAFlowErrors)
