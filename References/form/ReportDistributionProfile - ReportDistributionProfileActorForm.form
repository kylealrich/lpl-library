ReportDistributionProfileActorForm is a Form
    Layout
        paragraph
            SuppressBlankReportToSubmittingActor
            text of "OnlyAppliesIfNotIncludedViaActorGroup,Role,OrRoleGroup"
        three column
            ActorGroup
                select is ActorGroupHierarchySelectList
            ActorGroup.Description
                no label
                display as text
            visible when (NoActorsInTargetedGroups)
                text of "NoActorsInTargetedActorGroup(s)" with icon.redalert
                    right of field
                    bold
                    color of red
        single column
            IncludeDescendentActorGroups
            SuppressBlankReportToActorGroup
            blank line
            AllowDynamicActorSet
            visible when (AllowDynamicActorSet)
                SendBlankReportToDynamicActors
            blank line
        paragraph
            Role
            RoleGroup
        single column
            SuppressBlankReportToRole
            blank line
            paragraph
                BurstByActor
                text of "GenerateASeparateCopyForEachActorApplyingActorSpecificSecurity(DoesNotApplyToStaticJavaReports)"
            blank line
            SuppressUserNotification
            blank line
            valid when (ContainsNonDynamicActorBasedProfile)
                button of "ViewActors"
                    link is IncludedActors
            blank line
            ReportEmailOption
            visible when (ReportEmailOption entered)
                visible when (not ReportEmailOption.DefinedMessageOnly)
                    text of "ValuesEnteredHereWillOverrideDefaultValuesForTheseFields.WhenBlank,DefaultValuesAreUsed."
                ReportEmailTemplate.From
                ReportEmailTemplate.Subject
                    use text area of 1 lines
                    show up to 80 characters
                ReportEmailTemplate.Body
