PhoneContractLineOverview is a Form
    title is "Overview"
    called out actions only
    Actions
        action is Delete
            hide when invalid
    Layout
        single column
            visible when (UseImageURL)
                ItemImageURL
                    display as full image
            visible when (not UseImageURL)
                DerivedPicture
                    no label
                    display as full image up to 3 lines
                        missing image is random background
                            foreground text is "<ItemNumber.ItemDescriptionAbbreviation>"
        display as text
            two column table
                column1 of 50%
                    ItemNumber
                        label is "Item"
                column2 of 50%
                    ItemDescription
            two column table
                column1
                    ItemType
                    visible when (HasVendorItem)
                        VendorItem.VendorItemDescription
                            label is "VendorItem"
                column2
                    visible when (ItemType.Service)
                        ServiceCode
                    visible when (not HasVendorItem)
                        visible when (VendorItemDescription entered)
                            visible when (not ServiceItem)
                                VendorItemDescription
                                    label is "VendorItem"
            single column
                BaseCostUOM
                    label is "BaseCost"
            two column table
                column1 of 50%
                    EffectiveDate
                        label is "CurrentEffectiveDate"
                column2 of 50%
                    ExpirationDate
                        label is "CurrentExpirationDate"
            paragraph
                visible when (Manufacturer.ManufacturerCode entered)
                    Manufacturer.ManufacturerCode
                    Manufacturer.Description
                        label is "Name"
                    Manufacturer.ManufacturerDivision
                        label is "Division"
                visible when (ManufacturerNumber entered)
                    ManufacturerNumber
                        label is "Number"
            paragraph
                Contract
                    label is "Contract"
