AssetRepairForm is a Form
    is primary
    title is "AssetRepair"
    Layout
        paragraph
            Asset
                display as text
            Asset.Description
                no label
                display as text
            Asset.DerivedStatus
                no label
                display as text
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                    display as text
                Asset.AssetLease.LeaseCompany.Name
                    no label
                    display as text
            paragraph
                Asset.AssetLease.Lease
                    display as text
                Asset.AssetLease.Lease.Description
                    no label
                    display as text
        paragraph
            Asset.TagNumber
                display as text
        blank line
        single column
            AssetRepair.RepairDate
            Description
            Currency
        paragraph
            TransactionRepairCost
                label is "RepairAmount"
            TransactionRepairTax
                label is "Tax"
        blank line
        paragraph
            InvoiceAndPurchaseOrderInformation.InvoiceCompany
            InvoiceAndPurchaseOrderInformation.PurchaseOrder
                label is "PurchaseOrder"
            InvoiceAndPurchaseOrderInformation.PurchaseOrderLine
        paragraph
            InvoiceAndPurchaseOrderInformation.Vendor
        paragraph
            InvoiceAndPurchaseOrderInformation.PayablesInvoice
        blank line
        paragraph
            Project
