TrueCostMain is a Form
    Layout
        paragraph
            Status
            ErrorCount
            visible when (ErrorMessage entered)
                ErrorMessage
                    no label
                    use text area of 1 lines
            visible when (GenerateListingData)
                button of "ListingReport"
                    link is ListingReport
                    display as link
                visible when (not NoJournalizedTransactions)
                    button of "CalculationReport"
                        link is JournalizedCalculationReport
                        display as link
                visible when (NoJournalizedTransactions)
                    button of "CalculationReport"
                        link is CalculationReport
                        display as link
        paragraph
            visible when (RunName entered)
                RunName
            visible when (RunDescription entered)
                RunDescription
            visible when (AllocationSnapshot entered)
                AllocationSnapshot
                    label is "ExpenseSnapshotName"
