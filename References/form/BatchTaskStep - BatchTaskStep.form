BatchTaskStep is a Form
    title is "JobStreamStep"
    Layout
        four column
            BatchTask
                label is "JobStream"
                select is AllStreamsOrPrivateStreamsOwnedByTaskStepOwnerRel.JobStreamSelectList
            BatchTask.IsPrivate
                display as text
            BatchTask.Owner
                display as text
            visible when (BatchTask.WarnPrivateUsedInStream)
                text of "<BatchTask><BatchTask.PrivateStreamResidentWarningMessage>"
                    right of field
                    color of blue
                    align as label
            visible when (BatchTask.WarnPublicUsedInStream)
                text of "<BatchTask><BatchTask.PublicStreamResidentWarningMessage>"
                    right of field
                    color of orange
                    align as label
        blank line
        three column
            ExecutionOrder
                display only
            NewExecutionOrder
            ClearCache
                mouse over text is "IfAStepKicksOffSeparateBackgroundActionsThatChangeDataAccessedInThisStep,OrPrior,AndAreRequiredForSubsequentSteps,ThisWillCauseTheDataToBeLookedUpFresh.CacheIsClearedPriorToThisStep."
        four column
            visible when (BatchTask.IsPrivate)
                TaskStep
                    select is AllPublicAndUserOwnedBatchTasksFromContext
            visible when (not BatchTask.IsPrivate)
                TaskStep
                    select is PublicBatchTasks
            TaskStep.Type
                display as text
            TaskStep.IsPrivate
                display as text
            TaskStep.Owner
                display as text
        visible when (TaskStep.Type.TaskStream)
            single column
                BatchTask.AsyncTasks
                    label is "ParallelProcessing"
