MobileSupplierPortalRegistration is a Form
    title is "Registration"
    Layout
        paragraph
            LoginName
                label is "UserName"
            Password
                hidden entry
            ConfirmPassword
                hidden entry
        paragraph
            GivenName
                label is "FirstName"
            FamilyName
                label is "LastName"
        paragraph
            TelephoneNumber.InternationalPrefix
                label is "MainCountry/\\JurisdictionCode"
            TransientTelephone
                label is "MainPhoneNumber"
            TelephoneNumber.Extension
        paragraph
            EmailAddress
            visible when (SupplierGroup.RequireEmailConfirmation)
                ConfirmEmailAddress
                    label is "ConfirmEmailAddress*"
            SupplierName
                label is "CompanyName"
        visible when (SupplierGroup.DisplayNonVAT)
            paragraph
                TaxIdGroup.TaxIdType
                TaxIdGroup.TaxId
                    label is "<DerivedTaxId>"
                TaxCertification.File
                    label is "Attach<TaxCertificationLabel>"
                visible when (BothTaxCodes)
                    text of "<BothTaxMessage>"
                        italics
        visible when (SupplierGroup.DisplayVAT)
            paragraph
                VATRegistrationCountry
                VATRegistrationNumber
                    label is "<DerivedVAT>"
        single column
            text of "MailingAddress*"
                bold
        paragraph
            SameAsAddressAbove
        visible when (SupplierGroup.DisplayTypeForRegistration)
            MailingAddress
                form is PostalAddressMinimumWithType
        visible when (not SupplierGroup.DisplayTypeForRegistration)
            MailingAddress
                form is PostalAddressMinimum
        single column
            AcceptTerms
                label is "AcceptTerms_andConditions_asShownBelow"
            SupplierGroup.TermAndCondition
                no label
                display as text
        visible when (false)
            paragraph
                LoginName
                Password
                SupplierGroup
                ConfirmPassword
                ContactTitle
                MainContact
                EmailAddress
                TelephoneNumber
                FaxNumber
                MobilePhone
                ReceiveEmailNotification
                VendormateEntityId
                VendormateUserId
                SanctionsFree
                TaxIdVerifiedByVendormate
                GlobalLocationNumber
        captcha control
