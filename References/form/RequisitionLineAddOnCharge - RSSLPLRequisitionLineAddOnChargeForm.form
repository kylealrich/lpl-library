RSSLPLRequisitionLineAddOnChargeForm is a Form
    propagate as a drill
    title is "RequisitionLineAddOnCharge"
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is save and close
            action icon is save
    Layout
        single column
            paragraph
                Requisition.Requester
                    label is "Requester"
                    display as text
                Requisition.Requester.Employee.PresentationNameSnapshot
                    no label
                    display as text
            paragraph
                Requisition
                    label is "RequisitionNumber"
                    display as text
                Requisition.BaseCurrencyCode
                    no label
                    display as text
                RequisitionLine.Item
                    display as text
                RequisitionLine.Item.Description
                    no label
                    display as text
        blank line
        blank line
        two column
            paragraph
                AddOnCharge
                AddOnCharge.Description
                    no label
                    display as text
            ZeroCost
                when value changed
                    TotalAddOnChargeAmount =  blank
        three column
            column1
                AddOnChargePercent
                    label is "Rate"
                    when value changed
                        TotalAddOnChargeAmount =  blank
            column2
                EnteredUnitCost
                    label is "UnitCost"
            column3
                TotalAddOnChargeAmount
                    label is "TotalAddOnCost"
        header2 of "ProcessFlags"
        three column
            column1
                visible when (DisplayTaxInfo)
                    Taxable
                Summarize
                    label is "Summary"
            column2
                visible when (false)
                    TransientTaxEntity
                visible when (Taxable)
                    TaxCode
                        label is "Add-OnCostTax"
                        select is TaxCodesForEntity
                PrintOnRequisition
            column3
                visible when (Taxable)
                    TaxCode.TaxCodeAccountsRel.AccruedOrInvoiced
                        label is "Accrual"
                        display as text
                LandedAddOnCharge
                    label is "Landed"
                    display as text
        header2 of "VendorInformation"
        two column
            visible when (DisplayVendor)
                Vendor
                paragraph
                    visible when (DisplayPurchaseFrom)
                        PurchaseFromLocation
                        PurchaseFromLocation.VendorLocation.VendorName
                            no label
                            display as text
            Currency
        visible when (not AddOnCharge.LandedAddOnCharge)
            single column
                visible when (DisplayAccounting)
                    Account
                        label is "Account"
                        compact format
                paragraph
                    TransientAssetInformation.AssetTemplate
                        label is "Template,Asset"
                    TransientAssetInformation.Asset
                        no label
