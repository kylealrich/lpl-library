ServiceContractAnalysisSummaryForm is a SummaryForm
    title is "ServiceContractAnalysis"
    Layout
        text of "<RepresentativeText>"
            header4
            bold
        two column
            column1
                Vendor.RepresentativeText
                EffectiveDate
                ExpirationDate
                PrimaryContactRel.DerivedPrimaryName
                    label is "InternalContact"
                Status
                    no label
                    display as tag
                        color of turquoise when (ActivationInProgress)
                        color of brown when (ContractStatus.Draft)
                        color of green when (ContractStatus.Released)
                        color of orange when (ContractStatus.Negotiation)
                        color of yellow when (ContractStatus.FinalApproval)
                        color of blue when (ContractStatus.ReadyToActivate)
                        color of green when (ContractStatus.Active)
                        color of gray when (ContractStatus.Inactive)
                        color of purple when (ContractStatus.Addendum)
                        color of purple when (ContractStatus.Amendment)
                        color of black when (ContractStatus.Closed)
                visible when (OnHold)
                    OnHoldMessage
                        no label
                        display as tag
                            color of red
            column2
                MaximumAmount
                    label is "LifetimeMaximumAmount"
                    display when blank
                AmountOrdered
                    label is "InvoicedAmount"
                    display when blank
                visible when (not ContractTypeAllowsZeroMaxQuantity)
                    TotalLineMaximumAmount
                        display when blank
                visible when (UseCommitments)
                    TotalCommitments
                        label is "TotalRemainingCommitments"
                        display when blank
        list is ContractLineRel.ServiceContractLineAnalysisList
        visible when (AnyReleasedServiceInvoicesExist)
            list is ServiceContractReleasedInvoiceRel.InvoicesForAContractForAnalysisReport
        visible when (DrillCommitmentsExist)
            list is GLCommitDrillRel.POContractAnalysis
        visible when (AnyReleasedServiceInvoicesExist)
            list is PayablesInvoiceDetailReleasedNoGroupRel.InvoiceDetailsForAllLinesForContractAnalysisReport
        visible when (UseHeaderCommitments)
            form is PurchaseCommitments
