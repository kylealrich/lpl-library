MobileItemDashboardContext is a Form
    title is "Item"
    called out actions only
    restrict action Delete
    Actions
        action is Delete
            hide when invalid
    Layout
        two column table
            column1
                ItemGroup
                    display as text
                Item
                    display as text
            column2
                ItemGroup.Description
                    label is "ItemGroupDescription"
                    display as text
                Active
                    display as text
        single column
            Description
                display as text
            StockUOM
                display as text
            Description3
                label is "LongDescription"
                display as text
                use text area of 3 lines
            blank line
            Reference1
                display as text
            Reference2
                display as text
            Manufacturer
                label is "Manufacturer"
                display as text
                compact format
            Manufacturer.Description
                no label
                display as text
            ManufacturerNumber
                display as text
            GenericName
                display as text
            visible when (UseLinkedImage)
                ImageURL
                    no label
                    display as image
            visible when (not UseLinkedImage)
                Picture.File
                    no label
                    display as full image up to 5 lines
                        missing image is missingpicture96px
