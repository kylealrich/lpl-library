ContactContext is a Form
    Layout
        display as text
            three column distributed
                column1
                    Supplier.RepresentativeText
                        label is "Supplier"
                visible when (ContactExists)
                    column2
                        paragraph
                            RepresentativeText
                                label is "Contact"
                            visible when (PrimaryContact)
                                PrimaryTag
                                    no label
                                    display as tag
                                        color of green
                    column3
                        RegistrationTag
                            no label
                            display as tag
                                color of green when (RegistrationComplete)
                                color of red when (not RegistrationComplete)
                        visible when (not Active)
                            ActiveTag
                                no label
                                display as tag
                                    color of red
                        visible when (ExternalEntityRegistrationNotComplete)
                            ExternalEntityTag
                                no label
                                display as tag
                                    color of yellow
