RecallNoticeAnalysisReport is a SummaryForm
    title is "_"
    Layout
        header2 of "AnalysisInformationForNotice#<RecallNotice>"
            show border color of black
            shade
            center
        header2 of "_"
        single column
            Name
            Description
                use text area of 4 lines
            RecallType
        two column
            RecallDate
                label is "AnnouncementDate"
            RecallReceivedDate
        visible when (ManufactureDateRange entered)
            paragraph
                text of "ManufactureDateRange:"
                ManufactureDateRange.Begin
                    no label
                text of "-"
                ManufactureDateRange.End
                    no label
        visible when (DistributionDateRange entered)
            paragraph
                text of "DistributionDateRange:"
                DistributionDateRange.Begin
                    no label
                text of "-"
                DistributionDateRange.End
                    no label
        single column
            ManufacturerName
                label is "Manufacturer"
        two column
            RecallCoordinator.RecallUserName
                label is "Coordinator"
            RecallCoordinator.Employee.EmployeeWorkEmailAddress
        paragraph
            RecallCoordinator.Employee.EmployeeWorkTelephone
        single column
            create date
        paragraph
            ReleasedTimestamp
                label is "ReleaseDate"
            DaysInPendingStatus
                label is "DaysToReleaseAfterCreation"
        paragraph
            NotApplicableTimestamp
                label is "DateSetToNotApplicable"
            ClosedTimestamp
                label is "CloseDate"
            DaysInActiveStatus
                label is "DaysToCloseAfterRelease"
        visible when (RecallGroup.RecallApprovalRequired)
            paragraph
                ApprovalTimestamp
                    label is "ApprovalDate"
                DaysInAwaitingApprovalStatus
                    label is "DaysToApproveAfterClose"
        paragraph
            FinalizedDate
            DaysUntilFinalized
                label is "DaysToFinalizeAfterCreation"
        header2 of "TaskInformation"
            show border color of black
            shade
            center
        header2 of "_"
        list is RecallNoticeTask set.RecallNoticeTaskAnalysisList
        visible when (HasResolutions)
            header2 of "Resolutions"
                show border color of black
                shade
                center
            header2 of "_"
            list is RecallProductItemAction set.RecallProductItemActionReport
