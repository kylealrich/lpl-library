PayablesInvoiceSpreadAddOnChargeForm is a Form
    is primary
    propagate as a drill
    title is "InvoiceSpreadAddOnCharge"
    Layout
        header2 of "InvoiceInformation"
        display as text
            three column distributed
                column1
                    PayablesInvoice.DerivedCompanyNameID
                        label is "Company"
                    PayablesInvoice.DerivedVendorNameID
                    PayablesInvoice.Invoice
                column2
                    PayablesInvoice.Status
                    PayablesInvoice.InvoiceDate
                    PayablesInvoice.VoucherNumberDisplay
                column3
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    PayablesInvoice.DueDate
                    visible when (PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.ProcessingTeam
                    visible when (not PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.APClerk.PreferredSimplePresentationName
                            label is "Processor"
        header2 of "ChargeInformation"
        display as text
            paragraph
                PurchaseOrder
                PurchaseOrder.Vendor
                    label is "Vendor"
                PurchaseOrder.Vendor.VendorName
                    no label
        blank line
        paragraph
            AddOnCharge
                label is "AddOnCost"
                select is AddOnChargesWithSpreadList
            AddOnCharge.Description
                no label
                display as text
        single column
            SpreadMethod
            SpreadAmount
                label is "Amount"
            AddOnChargePercent
                label is "Rate"
            TaxCode
                label is "Add-OnCostTax"
            Accrual
                label is "AccrualFlag"
                display as text
            PurchaseFromLocation
