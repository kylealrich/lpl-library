PurchaseOrderLineDashboardContext is a Form
    Layout
        display as text
            four column distributed
                column1
                    visible when (Item.UseLinkedImage)
                        Item.ImageURL
                            display as full image up to 5 lines
                    visible when (not Item.UseLinkedImage)
                        Item.Picture.File
                            display as full image up to 5 lines
                                missing image is random background
                                    foreground text is "<Item.ItemDescriptionAbbreviation>"
                column2
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                    visible when (OriginalItemExists)
                        paragraph
                            Item
                            visible when (InventoriedOrNonstock)
                                Item.Description
                                    label is "Description"
                            visible when (not InventoriedOrNonstock)
                                Description
                        OriginalItem
                            label is "OriginalItem"
                                italics
                        OriginalItemRel.Description
                            label is "OriginalItemDescription"
                                italics
                    visible when (not OriginalItemExists)
                        paragraph
                            Item
                            visible when (InventoriedOrNonstock)
                                Item.Description
                                    label is "Description"
                            visible when (not InventoriedOrNonstock)
                                Description
                    paragraph
                        EnteredUnitCost
                            label is "UnitCost"
                        CalculateExtendedAmount
                            label is "Amount"
                        Currency
                    visible when (ItemType.Service)
                        ServiceCode
                column3
                    paragraph
                        PurchaseOrder
                        LineNumber
                            label is "Line"
                    paragraph
                        ItemType
                        Vendor.RepresentativeText
                    paragraph
                        Quantity
                            label is "OrderedQuantity"
                        EnteredBuyUOM
                            label is "UOM"
                column4
                    paragraph
                        PurchaseOrder.DerivedPurchaseOrderStatus
                            label is "POStatus"
                        DerivedStatus
                            label is "LineStatus"
                    paragraph
                        VendorItem
                        VendorItem.VendorItemDescription
                            no label
                    VendorPriceUnitCost
                    paragraph
                        ShipToLocation.RepresentativeText
                            label is "ShipToLocation"
                        EarlyDeliveryDate
                            label is "DeliveryDate"
        visible when (false)
            TransientOnline
