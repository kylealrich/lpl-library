MainForm is a Form
    Layout
        paragraph
            WarehouseShipmentLine
                label is "Line"
                display as text
            WarehouseShipmentLineComponent
                label is "Component"
        paragraph
            Item.RepresentativeText
                display as text
        single column
            Quantity
                display as text
            DetailQuantity
                display as text
        visible when (HasSpecialHandling)
            header2 of "SpecialHandling"
            two column distributed
                column1
                    paragraph
                        DerivedSpecialHandlingCode
                            label is "SpecialHandling"
                        DerivedSpecialHandlingDescription
                            no label
                            display as text
                    DerivedSpecialHandlingInstructions
                        label is "SpecialHandlingInstructions"
                        display as text
            single column
                DerivedTimeSensitive
                    label is "TimeSensitive"
                    display as text
            visible when (Item.SpecialHandlingCode.IsTimeSensitive)
                DerivedHandlingTimeInMinutes
                    label is "HandlingTimeInMinutes"
