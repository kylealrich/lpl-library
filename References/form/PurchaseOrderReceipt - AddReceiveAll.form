AddReceiveAll is an ActionForm
    action is Unreleased.AddReceiveAll
        on completion navigate to ViewReceiver
    Layout
        paragraph
            Company
            PurchaseOrder
                select is ReleasedPurchaseOrders
        paragraph
            ReferenceNumber
        paragraph
            ReceivedDate
                label is "Date\\,TimeReceived"
        paragraph
            ShipToLocation
                label is "ReceivedLocation"
            ShipToLocation.Name
                no label
                display as text
        paragraph
            Carrier
            Carrier.VendorName
                no label
                display as text
        paragraph
            TransientBillOfLading
                label is "Bill_ofLading"
            ReprintReceipt
        paragraph
            PackageTrackingNumber
                label is "TrackingNumber"
            PackageTrackingLabel
                label is "Labels"
        visible when (PurchaseOrder.Vendor.RequireMatchReference)
            paragraph
                MatchReferenceNumber
