DocumentTemplatesForm is a Form
    Layout
        header2 of "Options"
        single column
            RemittanceAdviceFromEmailAddress
        header2 of "IDMTemplates"
        header3 of "VendorStatement"
        single column
            paragraph
                UseIDMInVendorStatement
                    label is "UseIDMTemplateForVendorStatement"
                visible when (UseIDMInVendorStatement)
                    VendorStatementTemplate
                        no label
                        select is VendorStatementIDMTemplate
                    button of "<VendorStatementTemplate.Name>"
                        link is external "<VendorStatementTemplate.RetrieveUrl>"
                        display as link
        header3 of "US1099Forms"
        single column
            paragraph
                EnableUS1099IDMForms
                    label is "UseIDMTemplateForUS1099Forms"
                visible when (IDMUS1099Enabled)
                    US1099FormRevisionYear
                        no label
                        display as text
                    button of "ReloadUS1099IDM_template"
                        valid when (ForceUploadIsValid)
                        action is ForceUploadUS1099IDMTemplate
                    visible when (UploadingUS1099IDMTemplates)
                        text of "<UploadingUS1099IDMTemplatesMsg>" with icon.cycle-amber
                            header3
                            bold
                            color of orange
