Main is a Form
    Layout
        four column distributed
            column1
                LeaseClassification
                    label is "Classification"
                paragraph
                    LeaseType
                        label is "Type"
                        select is LeaseTypes
                    LeaseType.Description
                        no label
                        display as text
            column2
                BeginDate
                    label is "FromDate"
                EndDate
                    label is "ToDate"
            column3
                LeaseTerm
                    label is "LeaseTerm"
                RemainingLife
                    label is "RemainingLife"
                TotalLife
                    label is "Total"
            column4
                Ownership
                SpecializedAsset
                ExercisePurchase
        header2 of "Land_andBuildings"
        paragraph
            LandAndBuilding
                label is "Land_andBuilding"
            visible when (LandAndBuilding.LandOnly)
                LandValue
                    label is "LandOnlyValue"
            visible when (LandAndBuilding.LandAndBuildingLease)
                LandValue
                BuildingValue
