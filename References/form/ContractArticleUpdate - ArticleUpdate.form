ArticleUpdate is a Form
    title is "ArticleUpdate"
    Layout
        two column
            Contract
                display as text
            Contract.Name
                label is "ContractName"
                display as text
        two column
            RequestDateTime
                label is "Date"
                display as text
            TermNegotiationVersion
                display as text
        two column
            RequestType
                display as text
            Status
                display as text
        single column
            ActionTaken
                display as text
        two column
            paragraph
                RequestingActor.FirstNameAndLastNameOrActor
                    label is "User"
                    display as text
                visible when (RequesterEmailAddressExists)
                    button of "<DerivedRequesterEmailAddress>"
                        link is "mailto:<DerivedRequesterEmailAddress>"
                        display as link
            DerivedRequesterPhoneNumber
                label is "Phone"
                display as text
        single column
            ApprovalComment
                label is "Comment"
                display as text
        visible when (DisplayRejectionComment)
            single column
                RejectionComment
                    label is "RejectionComment"
                    display as text
        single column
            OriginalTitle
                label is "Title"
                display as text
        visible when (RequestType.Create)
            single column
                RevisedHeaderText
                    label is "HeaderText"
                    display as text
        visible when (UpdateOrDelete)
            single column
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display as text
