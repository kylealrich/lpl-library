RequisitionLineDistributonsContext is a Form
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        Requisition.Company
                        Company.Name
                            no label
                    paragraph
                        Requisition.Requester
                        Requisition.Requester.Employee.PresentationNameSnapshot
                            no label
                    paragraph
                        RequestingLocation
                        RequestingLocation.Name
                            no label
                column2
                    Requisition.Requisition
                        label is "RequisitionNumber"
                    RequisitionLine
                        label is "LineNumber"
                    InventoryTransactionType
                column3
                    Requisition.DerivedStatusMessage
                        label is "Status"
                    paragraph
                        Requisition.ApprovalValue
                            label is "Total"
                        Requisition.BaseCurrencyCode
                            label is "Currency"
                    DerivedStatusMessage
                        label is "LineStatus"
        three column distributed
            column1
                DistributionBy
            column2
                paragraph
                    visible when (MissingDistribution)
                        MissingDistributionAccountMsg
                            no label
                            display as tag
                                color of yellow
                visible when (DistributionsExistButNotInBalance)
                    paragraph
                        text of "<RemainingToBeDistributed>"
                            bold
                        visible when (DistributionBy.ByQuantity)
                            text of "<RemainingQuantityToBeDistributed>"
                                bold
                            EnteredUOM
                                no label
                                display as text
                        visible when (DistributionBy.ByAmount)
                            text of "<RemainingAmountToBeDistributed>"
                                bold
                            TransactionCurrencyCode
                                no label
                                display as text
                        visible when (DistributionBy.ByPercent)
                            text of "<RemainingPercentToBeDistributed>"
                                bold
            column3
                visible when (Requisition.Requester.DisplayDistributionCode)
                    DistributionCode
