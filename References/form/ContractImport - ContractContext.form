ContractContext is a Form
    title is "ContractInterface"
    Layout
        four column
            column1
                paragraph
                    ContractGroup
                    ContractGroup.ProcurementGroup.Description
                        no label
                        display as text
                WorkingContractID
                paragraph
                    visible when (not GPOContractNumberEntered)
                        Supplier
                        Supplier.SupplierName
                            no label
                            display as text
                visible when (GPOContractNumberEntered)
                    Supplier.RepresentativeText
                        display as text
            column2
                ContractImport
                    display as text
                WorkingContractType
                paragraph
                    SupplierSourceId
                    SupplierSourceId.MainContact.FirstAndLastName
                        no label
                        display as text
            column3
                Name
                visible when (IsManufacturerContractForGPO)
                    ManufacturerSupplier
                        display as text
                visible when (IsDistributorContractForGPO)
                    ManufacturerSupplier
                        display as text
                visible when (IsManufacturerContractForGPO)
                    GPOContractNumber
                        display as text
                visible when (IsDistributorContractForGPO)
                    GPOContractNumber
                        display as text
            column4
                visible when (MultiplePriceProgram)
                    text of "MultiplePriceProgram"
                        bold
                        color of blue
                visible when (HasTierMembersMissingOnContract)
                    text of "InterfaceContractHasMembersNotOnContract"
                        bold
                        color of red
                visible when (HasUpdatedTiers)
                    text of "InterfaceContractHasUpdatedTiers"
                        bold
                        color of red
                visible when (IsManufacturerContractForGPO)
                    visible when (NewSupplierNotMapped)
                        text of "GPOHasChangedSupplierAndSupplierIsNotMappedToAContractSupplier;MustMapBeforeSupplierCanBeUpdated"
                            italics
                            color of red
                button of "LinesToProcess"
                    visible when (LinesToProcessExist)
                    link is LinesToProcess
                    display as link
                visible when (UpdateableLineErrorsExist)
                    text of "LineErrorsExistForContractUpdate"
                        bold
                        color of red
                    button of "UpdateableLineErrors"
                        link is LineErrorLink
                        display as link
                button of "ContractsCreatedOrUpdatedFromInterfaceContract"
                    visible when (CanViewMultipleContracts)
                    link is ContractsCreatedFromInterface
                    display as link
                button of "ContractCreatedFromInterfaceContract"
                    visible when (CanViewSingleContract)
                    link is ContractCreatedFromInterface
                    display as link
                visible when (IsS2Contract)
                    text of "S2Contract_NationalContractIs<NationalContractNumber>"
                        color of black
