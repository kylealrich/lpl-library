DetailTransactionReconciliationForm is a CompositeForm
    propagate as a drill
    title is "DetailTransactionReconciliation"
    context form is DetailTransactionReconciliationContextForm
        background is theme color
    restrict action CreatePeriodReconciliations
    restrict action ResetNewAccountFlag
    restrict action ResetAllNewAccountsFlag
    restrict action AssignAccountToReportGroup
    restrict action MatchSelectedTransactions
    restrict action ReconcileDetailTransactions
    restrict action AddToReconciliationGroup
    restrict action RemoveFromReconciliationGroup
    Actions
        action is SwitchToListOverListView
            hide when invalid
        action is SwitchToCombinedListView
            hide when invalid
        action is LoadAndReconcile
            hide when invalid
        action is ClearAllReconciliations
            hide when invalid
        action is SaveDetailTransactionReconciliation
            hide when invalid
        action is refresh
            label is "_"
    UnmatchedTransactions is a Panel
        title is "UnmatchedTransactions"
        visible when (not ListOverListManualReconView)
        list is TransactionReconDetail set.UnmatchedTransactionsList
    UnmatchedTransactionsList is a MultiListPanel
        title is "UnmatchedTransactions"
        visible when (ListOverListManualReconView)
        list is GLTransactionsLoadedInReconRel.UnmatchedGLTransactionsList
            visible when (LoadGeneralLedgerTransactions)
            show 8 lines
        list is InterfacedTransactionsLoadedInReconRel.UnmatchedInterfacedTransactionsList
            visible when (LoadInterfaceTransactions)
            show 9 lines
    CurrentSelectedTransactions is a Panel
        visible when (HasSelectedTransactions)
        list is TransactionReconDetail set.SelectedTransactionsList
            helper list is TransactionReconDetail set.ReconciliationSummaryRecordHelperList
                action is SelectTransaction
                valid when (HasMatchedTransactions)
    MatchedTransactions is a Panel
        visible when (HasMatchedTransactions)
        list is TransactionReconDetail set.ReconciliationSummaryRecordList
            helper list is TransactionReconDetail set.ReconciliationSummaryRecordHelperList
                action is SelectTransaction
