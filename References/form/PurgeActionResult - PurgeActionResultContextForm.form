PurgeActionResultContextForm is a Form
    title is "PurgeActionResult"
    Layout
        two column
            BusinessView
            BusinessAction
        single column
            PurgeActionResult
        two column
            RunTimeStamp
            EndTimeStamp
            visible when (HasParameters)
                ActionParameters
            button of "ViewRawParameters"
                visible when (HasParameters)
                view ActionParametersDoc
                    using mime type "application/xml"
        single column
            visible when (IsFullyRestored)
                text of "Restored"
                    display as tag
                        color of blue
            visible when (RaiseYellowAlert)
                text of untranslatable:"<YellowAlertMessage>"
                    display as tag
                        color of yellow
