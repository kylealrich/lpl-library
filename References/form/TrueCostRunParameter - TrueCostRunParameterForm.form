TrueCostRunParameterForm is a Form
    Layout
        two column distributed
            column1
                visible when (Status.Incomplete)
                    paragraph
                        RunName
                    paragraph
                        RunDescription
                    paragraph
                        Allocation
                    paragraph
                        AllocationGroup
                visible when (not Status.Incomplete)
                    display as text
                        paragraph
                            RunName
                        paragraph
                            RunDescription
                        paragraph
                            Allocation
                        paragraph
                            AllocationGroup
            column2
                visible when (Status.Incomplete)
                    MultiMonthFlag
                    visible when (not MultiMonthFlag)
                        paragraph
                            AllocationPostDate
                    visible when (MultiMonthFlag)
                        paragraph
                            FromAllocationPostDate
                        paragraph
                            ToAllocationPostDate
                    paragraph
                        FromStep
                        ToStep
                visible when (not Status.Incomplete)
                    display as text
                        MultiMonthFlag
                        visible when (not MultiMonthFlag)
                            paragraph
                                AllocationPostDate
                        visible when (MultiMonthFlag)
                            paragraph
                                FromAllocationPostDate
                            paragraph
                                ToAllocationPostDate
                        paragraph
                            FromStep
                            ToStep
        two column distributed
            column1
                visible when (Status.Incomplete)
                    header3 of "UseLedgers"
                    paragraph
                        UseActualLedger
                    paragraph
                        UseCapacityLedger
                visible when (not Status.Incomplete)
                    display as text
                        header3 of "UseLedgers"
                        paragraph
                            UseActualLedger
                                label is "ActualsLedger"
                            UseCapacityLedger
                                label is "CapacityLedger"
            column2
                visible when (Status.Incomplete)
                    header3 of "SourceBalanceOptions"
                    paragraph
                        SourceBalanceOption
                            no label
                visible when (not Status.Incomplete)
                    display as text
                        header3 of "SourceBalanceOptions"
                        paragraph
                            SourceBalanceOption
                                no label
        blank line
        header3 of "_"
        single column
            paragraph
                visible when (Status.Incomplete)
                    button of "Calculate"
                        action is RunAllocation
                        is primary
