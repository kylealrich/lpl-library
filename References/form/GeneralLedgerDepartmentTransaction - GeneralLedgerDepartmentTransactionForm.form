GeneralLedgerDepartmentTransactionForm is a Form
    propagate as a drill
    title is "Transaction"
    Layout
        two column
            AccountingEntity
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
            AccountingEntity.Name
                no label
                display as text
        paragraph
            GeneralLedgerDepartmentJournal
                label is "Journal"
            PostingDate
                label is "PostingDate"
                display as text
            GeneralLedgerDepartmentJournal.BalanceAmount
                label is "JournalBalanceAmount"
                display as text
        paragraph
            GeneralLedgerDepartmentTransaction
                label is "GlobalLedgerDepartmentTransaction"
                display only
            System
                display only
            Status
                display as text
            PrimaryLedger
                display only
        visible when (AccessForCreator)
            blank line
            FinanceCodeBlock
                label is "FinanceStructure"
                compact format
        visible when (AccessForApprover)
            blank line
            FinanceCodeBlock
                label is "FinanceStructure"
                compact format
        visible when (DisplayFinanceCodeOnly)
            blank line
            FinanceCodeBlock
                label is "FinanceStructure"
                display only
                compact format
        blank line
        paragraph
            TransactionDate
                label is "TransactionDate"
                display only
            visible when (AccessForCreator)
                TransactionAmount
                    label is "Amount"
            visible when (DisplayOnly)
                TransactionAmount
                    label is "Amount"
                    display only
            CurrencyCode
                label is "Currency"
                display only
        paragraph
            GeneralLedgerEvent
                label is "Event"
                display only
            GeneralLedgerEvent.Description
                no label
                display as text
        two column
            Description
            Reference
        single column
            visible when (AccessForCreator)
                ApprovalCode
            visible when (DisplayOnly)
                ApprovalCode
                    display only
