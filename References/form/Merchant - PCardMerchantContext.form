PCardMerchantContext is a Form
    Layout
        two column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        ProcurementGroup
                        ProcurementGroup.Description
                            no label
                            display as text
                    visible when (RecordExists)
                        ProcurementGroup.DerivedProcurementGroupName
                            label is "ProcurementGroup"
                            display as text
                paragraph
                    visible when (RecordExists)
                        Merchant
                            display as text
                    visible when (not RecordExists)
                        Merchant
                            show up to 25 characters
                    Name
            column2
                paragraph
                    visible when (not RecordExists)
                        ProcurementCardProgram
                        ProcurementCardProgram.Description
                            no label
                            display as text
                    visible when (RecordExists)
                        ProcurementCardProgram.DerivedCardProgramName
                            label is "ProcurementCardProgram"
                            display as text
                paragraph
                    Active
