AdjustmentContext is a Form
    title is "AdjustmentsForApplication"
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                    ReceivableApplication.BatchNumber
                column2
                    Customer.RepresentativeText
                    ReceivableApplication.PaymentSeq
                        label is "PaymentSequence"
                column3
                    ReceivableApplication.TransType
                        label is "Type"
                    ReceivableApplication.ApplicationSequence
                column4
                    visible when (IsReceivableInvoiceAdjustment)
                        button of "<ReceivableApplication.Invoice>"
                            link is ReceivableInvoiceNav
                            label is "transaction"
                            display as link
                    visible when (IsPaymentAdjustment)
                        button of "<ReceivableApplication.Invoice>"
                            link is ReceivablePaymentNav
                            label is "transaction"
                            display as link
                    ReceivableApplicationAdjustment
