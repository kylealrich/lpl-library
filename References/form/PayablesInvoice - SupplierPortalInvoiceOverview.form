SupplierPortalInvoiceOverview is a Form
    disable field options
    Layout
        display as text
            paragraph
                text of "Invoice<Invoice>"
                    header2
                button of "OpenInvoice"
                    link is SupplierInvoiceInfo
                    is primary
            header2 of "_"
            visible when (TaxAmount entered)
                three column distributed
                    column1
                        DerivedInvoiceAmountAndCurrencyIncludingTax
                            label is "TotalInvoiceAmount"
                        InvoiceDate
                        DerivedCompanyRepresentativeText
                            label is "Company"
                    column2
                        DerivedInvoiceAmountAndCurrency2
                            label is "BaseInvoiceAmount"
                        DueDate
                        InvoiceType
                            label is "Type"
                    column3
                        TaxAmount
                        visible when (OverdueInvoice)
                            DerivedDaysAfterDueDate
                                label is "DaysPastDue"
            visible when (TaxAmount not entered)
                three column distributed
                    DerivedInvoiceAmountAndCurrencyIncludingTax
                        label is "InvoiceAmount"
                    DerivedCompanyRepresentativeText
                        label is "Company"
                    InvoiceType
                        label is "Type"
                three column distributed
                    InvoiceDate
                    DueDate
                    visible when (OverdueInvoice)
                        DerivedDaysAfterDueDate
                            label is "DaysPastDue"
