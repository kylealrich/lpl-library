ReceivingInterfaceAdjustmentsContext is a Form
    title is "ReceiptAdjustmentAndInspectionInterfaceMaintenance"
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        Company
                    visible when (RecordExists)
                        Company.PurchasingCompany.RepresentativeText
                            label is "Company"
                            display as text
                paragraph
                    visible when (POReceiptAdjustmentAndInspectionImport.DocumentType not entered)
                        TransientDocumentType
                            label is "DocumentType"
                    visible when (POReceiptAdjustmentAndInspectionImport.DocumentType entered)
                        POReceiptAdjustmentAndInspectionImport.DocumentType
                            label is "DocumentType"
                            display as text
                    visible when (TransientDocumentType.ReceivingAdjustment)
                        AdjustmentReferenceNumber
                            label is "AdjustmentReferenceNumber"
                paragraph
                    visible when (POReceiptAdjustmentAndInspectionImport.ReceiptReferenceNumber not entered)
                        TransientReceiptReferenceNumber
                            label is "ReferenceNumber"
                    visible when (POReceiptAdjustmentAndInspectionImport.ReceiptReferenceNumber entered)
                        POReceiptAdjustmentAndInspectionImport.ReceiptReferenceNumber
                            label is "ReferenceNumber"
                            display as text
            column2
                paragraph
                    RunGroup
                paragraph
                    GlobalDocumentType
                paragraph
                    DerivedRecordInError
                        display as text
                    visible when (RecordInError)
                        ErrorMessage
                            display as text
            column3
                paragraph
                    PurchaseOrder
                paragraph
                    visible when (POReceiptAdjustmentAndInspectionImport.LineNumber not entered)
                        POReceiptAdjustmentAndInspectionImport.LineNumber
                            label is "LineNumber"
                    visible when (POReceiptAdjustmentAndInspectionImport.LineNumber entered)
                        POReceiptAdjustmentAndInspectionImport.LineNumber
                            label is "LineNumber"
                            display as text
