ContractMilestoneComposite is a CompositeForm
    is primary
    title is "ContractMilestone"
    context form is ContractMilestoneContext
        background is theme color
    Milestone is a Panel
        form is ContractMilestoneForm
    Comments is a Panel
        list is ContractMilestoneComment set.ContractMilestoneComments
    Contacts is a Panel
        list is ContractMilestoneContact set.ContractMilestoneContacts
    Emails is a Panel
        visible when (Contract.NotContractTemplate)
        list is MilestoneNotificationEmailsRel.ContractMilestoneNotificationEmails
