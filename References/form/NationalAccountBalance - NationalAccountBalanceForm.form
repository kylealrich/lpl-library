NationalAccountBalanceForm is a Form
    title is "NationalAccountBalance"
    Layout
        two column
            column1
                Company
                    label is "AccountCompany"
                Customer
                    label is "AccountCustomer"
                CurrentBalance
                OpenOrderAmount
                CreditLimit
                ReviewDate
                ReceivableHoldCode
            column2
                Company.Name
                    no label
                    display as text
                Customer.Name
                    no label
                    display as text
                visible when (BOEProcessing)
                    BillOfExchangeBalance
                blank line
                CreditLimitDate
                ReviewCode
                blank line
        single column
            HighBals
        two column
            column1
                LastDunningLetterNumber
                StatementRequired
                    label is "StatementRequired"
                        left of field
                ReceivableStatementCycle
                    label is "ReceivableStatementCycle"
                        left of field
                CreditBalanceStatement
                    label is "CreditBalanceStatement"
                        left of field
                OverCreditLimitStatement
                    label is "OverCreditLimitStatement"
                        left of field
                AllowReturns
            column2
                LastDunningLetterDate
                InvoicedCustomerBalanceForward
                ZeroBalanceStatement
                    label is "ZeroBalanceStatement"
                        left of field
                PastDueOnlyStatement
                    label is "PastDueOnlyStatement"
                        left of field
                NationalAccountSummaryStatement
                    label is "NationalAccountSummaryStatement"
                        left of field
                LastReturnAuthorizationDate
