LRCEmployee is a CompositeForm
    is primary
    title is "<Employee.Name.PreferredFirstAndLastName>'sEmployeeProfile"
    context form is LRCContextForm
        background is theme color
    AtAGlance is a Panel
        form is LRCDetail
    PersonalInformation is a Panel
        title is "ContactInformation"
        mouse over text is "ContactInformation"
        list is EmployeeContact set.LRCEmployeeContactsTalentProfile
    AdditionalResponsibilities is a Panel
        form is OtherRoles
    ProjectEmployee is a Panel
        visible when (ProjectEmployeeExists)
        list is ProjectEmployee.ProjectEmployeeViewList
    ProjectAssignments is a Panel
        visible when (ProjectAssignmentsExist)
        list is ProjectAssignmentRel.ProjectAssignmentsTalentProfile
    CurrentPeriodLaborDistribution is a Panel
        visible when (ProjectAssignmentsExist)
        list is CurrentProjectAssignmentLaborRel.ProjectLaborListTalentProfile
    ProjectPeriods is a Panel
        visible when (ProjectAssignmentsExist)
        list is ProjectEmployee.OpenProjectEmployeeLaborPeriodRel.AdminProjectSchedulePeriodList
