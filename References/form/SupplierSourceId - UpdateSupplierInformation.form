UpdateSupplierInformation is an ActionForm
    action is UpdateSupplierInformation
    title is "UpdateSupplierInformation"
    Layout
        header3 of "CompanyInformation"
        two column
            SupplierName
                label is "*_CompanyName"
            DoingBusinessAs
        two column
            DandBNbr
                label is "Dun&Bradstreet"
            BusinessType
        two column
            TaxIdGroup.TaxIdType
            visible when (Supplier.ChangeTaxID)
                TaxIdGroup.TaxId
            visible when (not Supplier.ChangeTaxID)
                ChangeTaxID
        two column
            visible when (SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                GlobalLocationNumber
            WebAddress
                label is "Website"
        header3 of "AddressInformation"
        two column
            blank line
            blank line
            blank line
            text of "MailingAddress"
                bold
            MailingAddress.DeliveryAddress.AddressLine1
                label is "*_AddressLine1"
            MailingAddress.DeliveryAddress.AddressLine2
            MailingAddress.DeliveryAddress.AddressLine3
            MailingAddress.DeliveryAddress.AddressLine4
            MailingAddress.Municipality
                label is "*_City"
            MailingAddress.StateProvince
                label is "*_StateProvince"
            MailingAddress.PostalCode
                label is "*_PostalCode"
            MailingAddress.County
            MailingAddress.Country
                label is "*_Country/\\Jurisdiction"
            text of "RemitToNameAndAddress"
                bold
            BillingFirstName
                label is "RemitToFirstName"
            BillingLastName
                label is "RemitToLastName"
            SameAsAddressAbove
                label is "CheckIfRemitToAddressIsTheSameAsMailingAddress"
            BillingAddress.DeliveryAddress.AddressLine1
            BillingAddress.DeliveryAddress.AddressLine2
            BillingAddress.DeliveryAddress.AddressLine3
            BillingAddress.DeliveryAddress.AddressLine4
            BillingAddress.Municipality
                label is "City"
            BillingAddress.StateProvince
                label is "StateProvince"
            BillingAddress.PostalCode
            BillingAddress.County
            BillingAddress.Country
        single column
            blank line
            blank line
            text of "*__=_Required"
