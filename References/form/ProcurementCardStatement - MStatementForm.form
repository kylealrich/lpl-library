MStatementForm is a CompositeForm
    title is "ProcurementCardStatement<ProcurementCardStatement>inProgram<ProcurementCardProgram>_-_<ProcurementCardProgram.Description>"
    context form is MStatementContextForm
    Actions
        action is ProcurementCardInvoiceAndRelease
            label is "InvoiceAndReleaseProcurementCardStatement"
            hide when invalid
        action is ApproveAll
            label is "ApproveAllTransactions"
            hide when invalid
        action is CloseAll
            label is "CloseAllTransactions"
            hide when invalid
        action is RejectAll
            label is "RejectAllTransactions"
            hide when invalid
        action is RecalculateChargeValues
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Main is a Panel
        form is MMain
    Totals is a Panel
        form is MTotals
    AllCharges is a Panel
        list is ProcurementCardStatementTransaction set.MTransactionsForAStatement
    ChargesToApprove is a Panel
        visible when (ApprovableTransactionsExist)
        list is ProcurementCardStatementTransaction set.MTransactionsToApproveForAStatement
    DisputedCharges is a Panel
        visible when (DisputedTransactionsExist)
        list is ProcurementCardStatementTransaction set.MDisputedTransactionsForAStatement
    ApprovedCharges is a Panel
        visible when (ApprovedTransactionsExist)
        list is ProcurementCardStatementTransaction set.MApprovedTransactionsForAStatement
    ClosedCharges is a Panel
        visible when (ClosedTransactionsExist)
        list is ProcurementCardStatementTransaction set.MClosedTransactionsForAStatement
    ChargesWithUnbalancedDistributions is a Panel
        visible when (HasDistributionsOutOfBalance)
        list is DistributionsOutOfBalanceRel.MUnbalancedTransactionsForAStatement
