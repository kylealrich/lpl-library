BuyerLinesPrint is a SummaryForm
    Layout
        header2 of "Line<SourcingEventLine>:_<Name>"
            underline color of black
        header2 of "_"
        visible when (Status.Cancelled)
            single column
                text of "**ThisLineHasBeenCancelled**"
                    header2
                    bold
                blank line
        single column
            Description
                use text area
        paragraph
            ItemNumber
                label is "Item"
            ItemDescription
                no label
            ItemDescription2
                no label
        visible when (HasThirdDescription)
            single column
                ItemDescription3
                    label is "LongItemDescription"
        paragraph
            CommodityCode
                label is "CommodityCode"
                compact format
            CommodityCode.Description
                no label
        single column
            UnspscCode
                label is "UNSPSC"
                compact format
        paragraph
            GlobalTradeItemNumber
                label is "GTIN"
            GlobalTradeItemNumber.FullDescription
                no label
        three column
            ManufacturerInformation.Manufacturer.ManufacturerCode
                label is "ManufacturerCode"
            ManufacturerInformation.Manufacturer.ManufacturerDivision
                label is "Division"
            ManufacturerInformation.ManufacturerNumber
                label is "ManufacturerNumber"
        four column
            Quantity
            UOM.UnitOfMeasure
            PerUnitEstimate
            visible when (PerUnitEstimateEntered)
                DerivedExtendedEstimate
                    label is "ExtendedEstimate"
                    display as text
        visible when (AOCPerUnitEstimateEntered)
            four column
                blank line
                blank line
                blank line
                DerivedExtendedAOCEstimate
                    label is "AOCEstimate"
                    display as text
            four column
                blank line
                blank line
                blank line
                DerivedTotalEstimate
                    label is "TotalEstimate"
                    display as text
        single column
            RequestedDeliveryDate
        three column
            RequireResponse
            AllowAdvancedPricing
                label is "PriceBreaksAllowed"
            AllowAlternateResponses
        single column
            AllowAddOnCharge
                label is "AddOnChargesAllowed"
        visible when (AddOnChargesExist)
            list is SourcingEventLineAOC set.SourcingEventLineAOCPrint
            blank line
        visible when (LineQuestionsExist)
            blank line
            list is SourcingEventLineQuestion set.LineQuestionsPrint
        visible when (LineDistExist)
            blank line
            list is SourcingEventLineDistribution set.PrintLineDistribution
        visible when (LineCommentsExist)
            blank line
            list is SourcingEventLineComment set.PrintLineComment
        visible when (LineAttachmentsExist)
            blank line
            list is SourcingEventLineAttachment set.LineAttachmentsPrint
