ProjectContractModificationForm is a Form
    is primary
    title is "ContractModification"
    Layout
        two column distributed
            column1
                paragraph
                    ProjectContract.DisplayContract
                        label is "<FinanceEnterpriseGroup.ProjectLabel>Contract"
                        display as text
                    ProjectContract.Project.Description
                        label is "Description"
                        display as text
                    OriginalContractAmount
                        display as text
                    NewContractAmount
                        label is "NewContractAmount"
                        display as text
        two column distributed
            column1
                paragraph
                    Date
                        label is "Date"
                    Description
            column2
                paragraph
                    UpdateProjectContractAmount
                    UpdateFD2Amount
                        label is "Update<FinanceEnterpriseGroup.FinanceDimension2Label>Amount"
        two column distributed
            column1
                paragraph
                    Scenario
                        label is "BudgetScenario"
                        select is ProjectBudgetsSelect
                        show up to 5 characters
                    Scenario.Description
                        display as text
                        show up to 30 characters
            column2
                paragraph
                    BudgetChangeOrder
                        label is "BudgetChangeRequest"
                        select is BudgetChangeOrdersProjectSelect
                        show up to 5 characters
                    BudgetChangeOrder.Description
                        display as text
                        show up to 30 characters
        two column distributed
            column1
                Comment
            column2
                DocumentURL
        single column
            paragraph
                Attachment
