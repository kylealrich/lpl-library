PrinterSettingsForm is a Form
    is primary
    title is "IDMPrinter_\\-_<IDMPrinter>"
    Actions
        action is PrintTestPage
            action icon is print
            hide when invalid
            valid when (IsActivePrinter)
        action is Create
            action icon is create
            label is "_"
            hide when invalid
            valid when (IsActivePrinter)
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
    Layout
        visible when (IDMPrinter not entered)
            two column distributed
                column1
                    IDMPrinter
                    IDMPrinterSettings
                        label is "SettingsName"
                column2
                    Description
            header3 of "PrinterProperties"
            two column distributed
                column1
                    PrinterOptions.Color
                        display as horizontal radio buttons
                        display as required
                    PrinterOptions.Scaling
                        display as required
                    Side
                    Copies
                        display as required
                column2
                    PrinterTray
                    PrinterOptions.Orientation
                        display as required
                    PaperSize
                        when value changed
                            CustomMediaSize.Width =  PaperSize.MediaSize.Width
                            CustomMediaSize.Height =  PaperSize.MediaSize.Height
                            refresh IsCustomSize
                    paragraph
                        visible when (not IsCustomSize)
                            display as text
                                CustomMediaSize.Width
                                CustomMediaSize.Height
                        visible when (IsCustomSize)
                            CustomMediaSize.Width
                                mouse over text is "<DerivedWidthSizeMsg>"
                            CustomMediaSize.Height
                                indent
                                mouse over text is "<DerivedHeightSizeMsg>"
        visible when (IDMPrinter entered)
            two column distributed
                column1
                    visible when (IDMPrinter not entered)
                        IDMPrinter
                    visible when (IDMPrinterSettings entered)
                        IDMPrinterSettings
                            label is "SettingsName"
                            display as text
                            raise yellow alert when (not IsActivePrinter)
                                mouse over text is "PrinterIsInactive"
                    visible when (IDMPrinterSettings not entered)
                        IDMPrinterSettings
                            label is "SettingsName"
                valid when (IsActivePrinter)
                    column2
                        Description
            valid when (IsActivePrinter)
                header3 of "PrinterProperties"
                two column distributed
                    column1
                        PrinterOptions.Color
                            display as horizontal radio buttons
                            display as required
                        PrinterOptions.Scaling
                            display as required
                        Side
                        Copies
                            display as required
                    column2
                        PrinterTray
                        PrinterOptions.Orientation
                            display as required
                        PaperSize
                            when value changed
                                CustomMediaSize.Width =  PaperSize.MediaSize.Width
                                CustomMediaSize.Height =  PaperSize.MediaSize.Height
                                refresh IsCustomSize
                        paragraph
                            visible when (not IsCustomSize)
                                display as text
                                    CustomMediaSize.Width
                                    CustomMediaSize.Height
                            visible when (IsCustomSize)
                                CustomMediaSize.Width
                                    mouse over text is "<DerivedWidthSizeMsg>"
                                CustomMediaSize.Height
                                    indent
                                    mouse over text is "<DerivedHeightSizeMsg>"
