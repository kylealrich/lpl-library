AddAttachment is an ActionForm
    action is BuyerAddAttachment
    title is "RequestToAddTerm_andConditionAttachment"
    Layout
        paragraph
            ContractArticle.RepresentativeText
                label is "Article"
                display as text
        paragraph
            ContractTermAndCondition
                label is "Term_andCondition"
                display as text
            Title
                no label
                display as text
        single column
            PrmNewAttachment.Title
                label is "AttachmentTitle"
            PrmNewAttachment.File
                label is "AttachmentFile"
            PrmNewAttachmentReference
                label is "AttachmentReference"
            PrmNewAttachmentDisplayOrder
                label is "DisplayOrder"
