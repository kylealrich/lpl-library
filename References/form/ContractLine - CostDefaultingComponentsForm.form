CostDefaultingComponentsForm is a Form
    title is "CostDefaultingComponentsForContract<Contract.RepresentativeText>-Line<ContractLine>"
    Actions
        action is refresh
            label is "_"
    Layout
        single column
            visible when (CostDefaultIsManufacturerOrDistributorContract)
                text of "SeeCostDefaultingComponentsForLineMembersToVerifyCostDefaultingForAMember"
                    italics
                visible when (Contract.IsManufacturerContract)
                    text of "CanUseForCostDefaultingFlagOnLineIsBasedOnPurchaseMethodOnLineMembers"
                        italics
            visible when (not Contract.ServicePurchaseType)
                visible when (not ItemType.Service)
                    UseForCostDefaultingDisplay
                        label is "LineCanBeUsedForCostDefaultingIfAllComponentsAreGreen:"
                        display as tag
                            color of green when (UseForCostDefaultingDisplay)
                            color of red when (not UseForCostDefaultingDisplay)
                visible when (ItemType.Service)
                    ForServiceCostDefaulting
                        label is "LineCanBeUsedForCostDefaultingIfAllComponentsAreGreen:"
                        display as tag
                            color of green when (ForServiceCostDefaulting)
                            color of red when (not ForServiceCostDefaulting)
                CanUseForCostDefaulting
                    label is "CanUseForCostDefaultingFlag:"
                    display as tag
                        color of green when (CanUseForCostDefaulting)
                        color of red when (not CanUseForCostDefaulting)
                HasBeenActivated
                    label is "LineHasBeenActivated:"
                    display as tag
                        color of green when (HasBeenActivated)
                        color of red when (not HasBeenActivated)
            visible when (Contract.ServicePurchaseType)
                ShowInvoiceDetailsFromContractLine
                    label is "LineCanBeUsedForInvoicePaymentIfAllComponentsAreGreen:"
                    display as tag
                        color of green when (ShowInvoiceDetailsFromContractLine)
                        color of red when (not ShowInvoiceDetailsFromContractLine)
                CanUseForInvoicePayment
                    label is "CanUseForInvoicePaymentFlag:"
                    display as tag
                        color of green when (CanUseForInvoicePayment)
                        color of red when (not CanUseForInvoicePayment)
                ActiveLine
                    label is "LineIsActive:"
                    display as tag
                        color of green when (ActiveLine)
                        color of red when (not ActiveLine)
            LineClosed
                label is "LineIsClosed:"
                display as tag
                    color of green when (not LineClosed)
                    color of red when (LineClosed)
            OnHold
                label is "LineIsOnHold:"
                display as tag
                    color of green when (not OnHold)
                    color of red when (OnHold)
            ErrorsExist
                label is "LineHasErrors:"
                display as tag
                    color of green when (not ErrorsExist)
                    color of red when (ErrorsExist)
            visible when (Contract.ServicePurchaseType)
                VendorDeterminedLine
                    label is "CostOptionIsVendorDetermined:"
                    display as tag
                        color of green when (not VendorDeterminedLine)
                        color of red when (VendorDeterminedLine)
            visible when (Contract.IsManufacturerContract)
                HoldManufacturerLineOnly
                    label is "OnlyManufacturerLineIsOnHold:"
                    display as tag
                        color of green when (not HoldManufacturerLineOnly)
                        color of red when (HoldManufacturerLineOnly)
            text of "CurrentDateMustAlsoBeWithinLineDateRangeOf<EffectiveDate>-<ExpirationDate>"
                italics
