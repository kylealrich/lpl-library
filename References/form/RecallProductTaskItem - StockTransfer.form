StockTransfer is an ActionForm
    action is StockTransfer
    title is "StockTransfer"
    Layout
        display as text
            three column distributed
                RecallNotice.RepresentativeText
                paragraph
                    RecallProduct
                    RecallProduct.ProductName
                        no label
                paragraph
                    RecallProductItem
                    RecallProductItem.Description
                        no label
        paragraph
            Quantity
            Uom
                no label
                display as text
        paragraph
            ActionType
                no label
                display as horizontal radio buttons
        visible when (ActionType.Create)
            four column
                visible when (Company entered)
                    Company.RepresentativeText
                        display as text
                visible when (Company not entered)
                    InventoryDocumentGroup.InventoryCompany
                    InventoryDocumentGroup.InventoryCompany.Name
                        no label
                        display as text
                InventoryDocumentGroup.ToCompanyLocationGroup.ToCompany
                    label is "ToCompany"
                InventoryDocumentGroup.ToCompanyLocationGroup.ToCompany.Name
                    no label
                    display as text
            four column
                visible when (InventoryLocation entered)
                    InventoryLocation.RepresentativeText
                        display as text
                visible when (InventoryLocation not entered)
                    InventoryDocumentGroup.InventoryLocation
                        label is "InventoryLocation"
                    InventoryDocumentGroup.InventoryLocation.Name
                        no label
                        display as text
                InventoryDocumentGroup.ToCompanyLocationGroup.FromToLoc
                    label is "ToLocation"
                InventoryDocumentGroup.ToCompanyLocationGroup.FromToLoc.Name
                    no label
                    display as text
            four column
                InventoryDocumentGroup.Bin
                    label is "Bin"
                text of "_"
                InventoryDocumentGroup.ToCompanyLocationGroup.Bin
                    label is "ToBin"
            paragraph
                TranDate
                    label is "TransferDate"
                PostDate
            blank line
            paragraph
                InventoryDocumentGroup.InventoryTransaction
                InventoryDocumentGroup.InventoryCompany.TransfersDocumentText
                    no label
                    display as text
        visible when (ActionType.Append)
            paragraph
                InventoryDocumentGroup.InventoryCompany
                InventoryDocumentGroup.InventoryCompany.Name
                    no label
                    display as text
            paragraph
                InventoryDocumentGroup.InventoryLocation
                    label is "InventoryLocation"
                InventoryDocumentGroup.InventoryLocation.Name
                    no label
                    display as text
            four column
                InventoryDocumentGroup.Bin
                    label is "Bin"
                text of "_"
                ToBin
            paragraph
                InventoryDocumentGroup.InventoryTransaction
                    label is "Document"
                    select is InventoryTransferDocuments
        visible when (RecallProductItem.CatchWeight)
            blank line
            paragraph
                CtwSecondaryQty
                    label is "SecondaryQuantity"
                RecallProductItem.Item.SecondaryUOM
                    no label
                    display as text
