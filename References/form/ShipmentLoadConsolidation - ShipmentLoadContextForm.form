ShipmentLoadContextForm is a Form
    Layout
        visible when (RecordExists)
            three column distributed
                display as text
                    column1
                        Company.DerivedCompanyDisplay
                            label is "Company"
                    column2
                        ShipmentLoadConsolidation
                    column3
                        StatusMsgTagField
                            display as tag
                                color of blue when (IsUnreleased)
                                color of blue when (IsForRelease)
                                color of green when (IsReleased)
                                color of green when (IsClosed)
            three column distributed
                display as text
                    column1
                        InventoryLocation.DerivedInventoryLocationIDName
                            label is "Location"
                    column2
                        Container.DerivedContainerDisplay
                            label is "ContainerType"
                    column3
                        Vehicle.DerivedVehicleDisplay
                            label is "Vehicle"
            three column distributed
                display as text
                    column1
                        ShipTo.RepresentativeText
                        visible when (HasIDMDocument)
                            button of "View"
                                link is external "<DerivedIDMDocumentLink>"
                                    lazy url retrieval
                                label is "Document"
                                display as link
                    column2
                        visible when (not HasVehicle)
                            ContextContainerUnitsLabel
                                label is "Load_Container_Limit"
                        visible when (HasVehicle)
                            ContextVehicleContainerUnitsLabel
                                label is "Load_Container_Limit"
                                display as text
                    column3
                        ContextNumberOfFilledContainerUnitsLabel
                            label is "FilledContainerCount"
            paragraph
                visible when (BackgroundLoadInProgress)
                    LoadInProgress
                        no label
                        display as tag
                            color of red when (BackgroundLoadInProgress)
                visible when (BackgroundDeleteInProgress)
                    DeleteInProgress
                        no label
                        display as tag
                            color of red when (BackgroundDeleteInProgress)
            text of "_"
            header3 of "_"
            header3 of "_"
                collapsible
                    initially collapsed
                    use show more or less affordance
                header3 of "LoadDetails"
                three column distributed
                    display as text
                        column1
                            text of "Current_Load"
                            paragraph
                                DerivedOrderLoadWeight
                                    label is "Weight"
                                    raise yellow alert when (CapacityYellowAlert)
                                        mouse over text is "CurrentLoadIsNearThe_Load_Limit"
                            paragraph
                                DerivedOrderLoadVolume
                                    label is "Volume"
                                    raise yellow alert when (CapacityYellowAlert)
                                        mouse over text is "CurrentLoadIsNearThe_Load_Limit"
                        column2
                            visible when (not HasVehicle)
                                text of "Load_Limit"
                                paragraph
                                    DerivedVehicleTypeWeightCapacity
                                        label is "Weight"
                                paragraph
                                    DerivedVehicleTypeVolumeCapacity
                                        label is "Volume"
                            visible when (HasVehicle)
                                text of "Vehicle_Load_Limit"
                                paragraph
                                    DerivedVehicleTypeWeightCapacityAndWeightUOM
                                        label is "Weight"
                                paragraph
                                    DerivedVehicleTypeVolumeCapacityCapacityAndVolumeUOM
                                        label is "Volume"
                        column3
                            text of "Container_Unit_Capacity"
                            paragraph
                                DerivedContainerWeightCapacityAndWeightUOM
                                    label is "Weight"
                            paragraph
                                DerivedContainerVolumeCapacityAndVolumeUOM
                                    label is "Volume"
