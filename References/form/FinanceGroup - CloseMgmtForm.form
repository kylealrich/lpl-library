CloseMgmtForm is a Form
    title is "CloseAndReconciliationSettings"
    Layout
        header3 of "CloseManagement"
        single column independent
            text of "ReasonCodeRequiredWhen"
                header4
                color of blue
        two column independent
            column1
                ReopenTaskReasonCodeRequired
                    label is "ReopeningTask"
                    indent
                VoidReasonCodeRequired
                    label is "VoidingTask"
                    indent
                RejectReasonCodeRequired
                    label is "RejectingTaskApproval"
                    indent
                visible when (RequireApprovalOfOneTimeTasks)
                    RejectOneTimeTaskReasonCodeRequired
                        label is "RejectingOneTimeTask"
                        indent
            column2
                StartLateReasonCodeRequired
                    label is "StartingTaskLate"
                    indent
                CloseLateReasonCodeRequired
                    label is "ClosingTaskLate"
                    indent
                EstimateReasonCodeRequired
                    label is "UpdatingTaskEstimate"
                    indent
        single column
            blank line
        single column independent
            text of "OneTimeTasks"
                header4
                color of blue
        single column independent
            AllowOneTimeTasks
                label is "AllowCreationOf"
                indent
            RequireApprovalOfOneTimeTasks
                label is "RequireApprovalBeforeWorking"
                indent
        single column independent
            paragraph
                OneTimeTaskDefaultApprovalCode
                    label is "DefaultApprovalCode"
                OneTimeTaskDefaultApprovalCode.Description
                    no label
                    display as text
        single column
            blank line
            blank line
        header3 of "ReconciliationManagement"
        single column independent
            text of "ApprovalRequiredFor"
                header4
                color of blue
            JournalEntryApprovalRequired
                label is "JournalEntry"
                indent
            text of "ReasonCodeRequiredWhen"
                header4
                color of blue
        two column independent
            RejectReconReasonCodeRequired
                label is "RejectingReconciliation"
                indent
            ReopenReconReasonCodeRequired
                label is "ReopeningReconciliation"
                indent
        two column independent
            visible when (JournalEntryApprovalRequired)
                RejectJournalEntryReasonCodeRequired
                    label is "RejectingJournalEntry"
                    indent
                ReopenJournalReasonCodeRequired
                    label is "ReopeningJournalEntry"
                    indent
