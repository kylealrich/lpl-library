Main is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Item
                paragraph
                    Description
                        label is "ItemDescription"
                paragraph
                    Location
            column2
                paragraph
                    LineType
                paragraph
                    Quantity
                    SellingUnitOfMeasure
                        label is "SellUnitOfMeasure"
                paragraph
                    EnteredPrice
                        label is "UnitPrice"
                    SellingPriceUnitOfMeasure
                        label is "SellPriceUnitOfMeasure"
            column3
                paragraph
                    UnitCost
                paragraph
                    CustomerOrder
                        label is "OrderNumber"
                visible when (IsHSNSACCodeEnabled)
                    paragraph
                        HSNSACCode
                        HSNSACCode.Description
                            no label
                            display as text
        blank line
        header2 of "Discounts"
        three column distributed
            column1
                paragraph
                    NoCharge
                    OrderDiscount
                        label is "DiscountFlag"
            column2
                paragraph
                    EnteredDiscount
            column3
                paragraph
                    AddOnDiscount
                        label is "Add\\-\\OnDiscount"
        blank line
        header3 of "Tax"
        three column distributed
            column1
                paragraph
                    TaxExemptCode
            column2
                paragraph
                    TaxCode
                        select is TaxCodes
            column3
