CloneTask is an ActionForm
    action is CloneTask
    title is "Copy<TaskName>"
    Layout
        header3 of "NewTask"
        single column
            CloneTaskName
                label is "Name"
        header3 of "SelectParent"
        two column
            NewParent
                label is "Parent"
                select is ProcessSelect
            NewParent.TaskName
                no label
                display as text
        two column
            CloneAttachments
                label is "CopyAttachments"
                align as label
