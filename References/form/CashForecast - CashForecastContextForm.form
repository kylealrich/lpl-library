CashForecastContextForm is a Form
    title is "CashForecast"
    Layout
        two column distributed
            column1
                CashForecast
                visible when (not HaveBuiltForecast)
                    paragraph
                        ForecastDateRange.Begin
                            label is "ForecastStartDate"
                        ForecastDateRange.End
                            label is "EndDate"
                    single column
                        RollingForecast
                        visible when (RollingForecast)
                            ForecastCreationParameter.RollingFrequency
                                display as horizontal radio buttons
                                display as required when (true)
                        Simulated
                visible when (HaveBuiltForecast)
                    display as text
                        paragraph
                            ForecastDateRange.Begin
                                label is "ForecastStartDate"
                            ForecastDateRange.End
                                label is "EndDate"
                        single column
                            paragraph
                                RollingForecast
                                visible when (RollingForecast)
                                    ForecastCreationParameter.RollingFrequency
                                        display as horizontal radio buttons
                                        display as required when (true)
                                visible when (LastRollingDateRange entered)
                                    LastRollingDateRange.Begin
                                        label is "LastRollingStartDate"
                                    LastRollingDateRange.End
                                        label is "EndDate"
                    Simulated
                visible when (ApprovalCodeRequired)
                    ApprovalCode
                        select is ApprovalCodesWithLevels
                        display as required when (ApprovalCodeRequired)
                    visible when (Status.AwaitingApproval)
                        DisplayCurrentApproverDesc
                            label is "WaitingOnApprovalFrom"
                            display as text
                            show up to 15 characters
            column2
                paragraph
                    Description
                    Status
                        display as text
                button of "CategoryDefaults"
                    link is CategoryDefaults
                    display as link
