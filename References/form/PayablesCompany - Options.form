Options is a Form
    Layout
        header2 of "OptionalSettings"
        three column table
            column1
                paragraph
                    PostingOption
                paragraph
                    TermsCalculation
                paragraph
                    InvoiceDateRange.FromDate
                        label is "InvoiceDateEditBegin"
                paragraph
                    CreateTransitDistribution
                        label is "CreateTransitDistributions"
            column2
                paragraph
                    TaxRecoveryOnDiscount
                        label is "TaxRecoveryOnDiscount"
                paragraph
                    FloatDays
                    BestTerms
                paragraph
                    InvoiceDateRange.ToDate
                        label is "InvoiceDateEditEnd"
                paragraph
                    DistributionCode
                    DistributionCode.Description
                        no label
                        display as text
            column3
                paragraph
                    RequireRemitTo
                        label is "RequireRemitToLocation"
                InterEntityDistributionWarning
                    label is "InterEntityDistributionWarningOnInvoice"
        paragraph
            InvoiceItemDetailAccount
                compact format
            InvoiceItemDetailAccount.GeneralLedgerChartAccount.AccountDescription
                display as text
        paragraph
            EnforceExistenceOfApprovalCategory
        paragraph
            EnforceProcessorCannotBeApprover
        paragraph
            AllowBankInstructionsOverride
        paragraph
            ProrateGainLossToDistributions
        paragraph
            VoucherReference
        paragraph
            RequireReasonForInvoiceAssignment
        visible when (VoucherReference)
            paragraph
                VoucherReferenceFormat
                    initial value is "{YEARYYYY}{MONTHMM}{000009}"
                text of "Sample:<DerivedStructuredVoucherReferenceNumber>"
            paragraph
                VoucherReferenceReportingBasis
        paragraph
            DefaultReference
                label is "DistributionReferenceDefault"
        paragraph
            MarkedAsPaidOffsetAccount
                compact format
            MarkedAsPaidOffsetAccount.GeneralLedgerChartAccount.AccountDescription
                display as text
        header2 of "TaxProcessing"
        paragraph
            TaxAccrualEntityOverride
        paragraph
            ForceLandedTaxToBeLinked
        visible when (not CompanyUsesInforTax)
            paragraph
                DelayTaxProcessing
            paragraph
                BypassThirdPartyTaxCallWhenICNExclude
        three column table
            column1
                paragraph
                    PayablesTaxTolerance
            column2
                visible when (PayablesTaxTolerance)
                    paragraph
                        AllowShortPay
                    paragraph
                        AllowToleranceOverride
                    paragraph
                        TaxToleranceOverAmount
                    paragraph
                        TaxToleranceUnderAmount
                    paragraph
                        TaxToleranceOverRate
                    paragraph
                        TaxToleranceUnderRate
            column3
                visible when (PayablesTaxTolerance)
                    visible when (AllowShortPay)
                        visible when (not CompanyUsesTaxEngineTax)
                            visible when (not CompanyUsesVertexTax)
                                paragraph
                                    PutOutOfToleranceOnHold
        header2 of "MatchInvoiceTaxTolerance"
        paragraph
            TaxToleranceAmount
                when value changed
                    refresh TaxCodeRequired
            TaxTolerancePercent
                when value changed
                    refresh TaxCodeRequired
            text of "TaxTolerancePassesIfWithinEitherAmountOrPercent."
                bold
                italics
        paragraph
            TaxCode
                select is TaxCodeFilteredList
                display as required when (TaxCodeRequired)
                when value changed
                    refresh TaxCodeRequired
            TaxCode.Description
                no label
                display as text
        paragraph
            TaxRoundingAccount
                compact format
            TaxRoundingAccount.GeneralLedgerChartAccount.AccountDescription
                display as text
        header2 of "InterfaceToReceivables"
        two column table
            column1
                paragraph
                    CustomerCreateAndInterfaceToAR
                        label is "InterfaceToReceivables"
                paragraph
                    ARInterfaceHoldCode
                        label is "InterfaceHoldCode"
                paragraph
                    LastARInterfaceInvoice
                        label is "LastReceivablesInterfaceInvoice"
                        display as text
            column2
                paragraph
                    DetailReceivablesInterface
                        label is "DetailReceivablesInterface"
                paragraph
                    ARInterfaceInvoicePrefix
                        label is "ReceivablesCreditMemoPrefix"
            column3
                paragraph
                    RetainInvoiceToAR
                        label is "RetainInvoiceNumber_\\whenInterfacing_inDetail"
        header2 of "Global"
        paragraph
            ForeignTradePaymentReport
            visible when (ForeignTradePaymentReport)
                ForeignTradePaymentAmount
        three column
            column1
                ClaimsAndLiabilitiesReporting
                    label is default
                        left of field
            column2
                visible when (ClaimsAndLiabilitiesReporting)
                    ThresholdAmount
                    OutputXML
            column3
                visible when (ClaimsAndLiabilitiesReporting)
                    Company.GeneralLedgerCompany.Currency
                        no label
                        display as text
        blank line
