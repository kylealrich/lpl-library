TermAndConditionUpdate is a Form
    title is "Term_andConditionUpdate"
    Layout
        single column
            Contract.RepresentativeText
            ContractArticle.Title
                label is "Article"
                display as text
        two column
            RequestDateTime
                label is "Date"
                display as text
            TermNegotiationVersion
                display as text
        two column
            RequestType
                display as text
            Status
                display as text
        single column
            ActionTaken
                display as text
        two column
            paragraph
                RequestingActor.FirstNameAndLastNameOrActor
                    label is "User"
                    display as text
                visible when (RequesterEmailAddressExists)
                    button of "<DerivedRequesterEmailAddress>"
                        link is "mailto:<DerivedRequesterEmailAddress>"
                        display as link
            DerivedRequesterPhoneNumber
                label is "Phone"
                display as text
        single column
            ApprovalComment
                label is "Comment"
                display as text
        visible when (DisplayRejectionComment)
            single column
                RejectionComment
                    label is "RejectionComment"
                    display as text
        visible when (RequestType.Create)
            single column
                RevisedTitle
                    label is "Title"
                    display as text
                RevisedHeaderText
                    label is "HeaderText"
                    display as text
                RevisedDescription
                    label is "Description"
                    display as text
        blank line
        visible when (RequestType.Update)
            single column
                DerivedComparedTitle
                    label is "Title"
                    display as text
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display as text
                DerivedComparedDescription
                    label is "Description"
                    display as text
        visible when (RequestType.Delete)
            single column
                DerivedComparedTitle
                    label is "Title"
                    display as text
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display as text
                DerivedComparedDescription
                    label is "Description"
                    display as text
        visible when (SpecificRequestType.AddAttachment)
            single column
                NewAttachmentDisplayOrder
                    display as text
                NewAttachment.File
                    label is "NewAttachment"
                    display as text
                NewAttachmentReference
                    label is "NewAttachmentReference"
                    display as text
        visible when (AttachmentToBeDeleted)
            header2 of "AttachmentToBeDeleted"
            single column
                TermAndConditionAttachmentRel.DisplayOrder
                    display as text
                TermAndConditionAttachmentRel.Attachment.File
                    label is "Attachment"
                    display as text
                TermAndConditionAttachmentRel.AttachmentReference
                    display as text
            header2 of "_"
        visible when (AttachmentHasBeenDeleted)
            header2 of "AttachmentToBeDeleted"
            single column
                DeletedAttachment.File
                    label is "Attachment"
                    display as text
                DeletedAttachmentRef
                    label is "AttachmentReference"
                    display as text
            header2 of "_"
