PurchaseOrderLineDefaults is a Form
    Layout
        header2 of "Options"
        single column
            DefaultDistributionAccount
                label is "DistributionAccount"
                compact format
        two column distributed
            column1
                paragraph
                    DefaultAssetTemplate
                        label is "AssetTemplate"
                    DefaultAssetTemplate.Description
                        no label
                        display as text
            column2
                DefaultAsset
                    label is "Asset"
        two column distributed
            paragraph
                DefaultTaxable
                    label is "Taxable"
                TaxCode
                    select is TaxCodeFilteredList
                TaxCode.Description
                    no label
                    display as text
            DefaultBillCode
                label is "BillingCode"
        single column
            visible when (IsOneSourceTax)
                PointOfTitleTransfer
        header2 of "SourceDetails"
        two column distributed
            column1
                DefaultSourceInformation.DefaultSourceDocument
                    label is "SourceDocument"
                    display as required when (DefaultSourceDocumentRequired)
            column2
                paragraph
                    DefaultSourceInformation.DefaultRequester
                        label is "Requester"
                        when value changed
                            refresh DefaultSourceDocumentRequired
                    DefaultSourceInformation.DefaultRequester.Employee.PresentationNameSnapshot
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    DefaultSourceInformation.DefaultOperatingCompany
                        label is "OperatingCompany"
                        display as required when (DefaultOperatingCompanyRequestingLocationRequired)
                        when value changed
                            refresh DefaultOperatingCompanyRequestingLocationRequired
                            refresh DefaultSourceDocumentRequired
                    DefaultSourceInformation.DefaultOperatingCompany.Name
                        no label
                        display as text
            column2
                paragraph
                    DefaultSourceInformation.DefaultRequestingLocation
                        label is "RequestingLocation"
                        display as required when (DefaultOperatingCompanyRequestingLocationRequired)
                        when value changed
                            refresh DefaultSourceDocumentRequired
                            refresh DefaultOperatingCompanyRequestingLocationRequired
                    DefaultSourceInformation.DefaultRequestingLocation.Name
                        no label
                        display as text
        two column distributed
            column1
                DefaultSourceInformation.DefaultDeliverTo
                    label is "DeliverTo"
                    when value changed
                        refresh DefaultSourceDocumentRequired
            column2
