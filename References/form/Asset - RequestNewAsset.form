RequestNewAsset is an ActionForm
    action is RequestNewAsset
    Layout
        paragraph
            RequestPriority
        paragraph
            NeededBy
        paragraph
            Company
                label is "AssetCompany"
            Company.GeneralLedgerCompany.Name
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetLease
                label is "LeaseCompany"
            AssetLease.Lease.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            Description
        paragraph
            TagNumber
        paragraph
            AssetCategory
        paragraph
            Currency
        two column independent
            column1
                paragraph
                    AssetType
                        compact format
                paragraph
                    AssetGroup
            column2
                paragraph
                    AssetAccountGroup
                    AssetAccountGroup.Description
                        no label
                        display as text
                paragraph
                    AssetAccountingUnitGroup
                    AssetAccountingUnitGroup.Description
                        no label
                        display as text
        paragraph
            AssetSummaryGroup
            AssetSummaryGroup.Description
                no label
                display as text
        paragraph
            AssetAccountingUnit
                compact format
        paragraph
            AssetOwner
            AssetOwner.Name.FirstAndLastName
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetLocation
            AssetLocation.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetDivision
            AssetDivision.Description
                no label
                display as text
                show up to 20 characters
        paragraph
            AssetProject
        paragraph
            DepreciationExpenseProject.Project
                label is "Depreciation_Expense_Project"
        three column distributed
            column1
                paragraph
                    WorkInProcess
                paragraph
                    Used
            column2
                paragraph
                    TaxExempt
                paragraph
                    IncludeInPhysicalInventory
            column3
                paragraph
                    Simulated
        header3 of "AssetComment"
        paragraph
            AddComment
        visible when (AddComment)
            paragraph
                Name
            paragraph
                Type
                    label is "CommentType"
            paragraph
                Comment
            paragraph
                Attachment.Title
                Attachment.File
            paragraph
                button of "View"
                    view Attachment.File
                    display as link
