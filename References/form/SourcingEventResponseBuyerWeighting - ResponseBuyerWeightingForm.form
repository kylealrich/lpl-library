ResponseBuyerWeightingForm is a Form
    is primary
    title is "ResponseBuyerWeighting"
    Layout
        display as text
            paragraph
                Company
                SourcingEvent
                    label is "Event#"
                SourcingEvent.Name
                    display as text
            paragraph
                NotifiedSupplier.Supplier
                    label is "Supplier"
                NotifiedSupplier.SupplierSourceId
                    label is "SupplierContact"
                NotifiedSupplier.Supplier.SupplierName
                    no label
            paragraph
                Employee
                Employee.Name.PreferredFirstAndLastName
                    display as text
            header2 of "BuyerScoreDetails"
            single column
                SourcingEventBuyerWeighting.Criteria
                    use text area of 8 lines
            blank line
        paragraph
            BuyerScore
            text of "Or"
            ScoreOfZero
        display as text
            paragraph
                SourcingEventBuyerWeighting.BestPossibleScore
                    display as text
                SourcingEventBuyerWeighting.CriteriaWeighting
                    label is "Weighting"
        blank line
        single column
            Comment
                use text area of 8 lines
        paragraph
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
