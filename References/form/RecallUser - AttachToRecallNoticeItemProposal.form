AttachToRecallNoticeItemProposal is an ActionForm
    action is AttachToRecallNoticeItemProposal
    title is "ReviewInformation"
    Layout
        display as text
            single column
                RecallGroup
                RecallNotice
            single column
                RecallUser.Employee.FirstLastName
                    label is "Reviewer"
        single column
            text of "PriorityWillDefaultToLowIfNotEntered"
                italics
            Priority
            text of "DueDateWillDefaultToCurrentDatePlus<RecallGroup.ItemProposalReviewNumberOfDays>DaysIfNotEntered"
                italics
            DueDate
            visible when (DefaultItemProposalInstructionsExist)
                text of "DefaultInstructionsExistWhichWillBeUsedIfNoneAreEntered"
                    italics
            RecallTaskInstruction
                label is "Instructions"
                select is ItemProposalTaskInstructions
            TaskInstructionDescription
                label is "InstructionDescription"
                use text area
