Scenario is a CompositeForm
    is primary
    title is "<ScenarioTitle>"
    context form is ScenarioMain
        background is theme color
    Actions
        action is UploadBudget
            hide when invalid
        action is SetReady
            hide when invalid
        action is QuickChange
            hide when invalid
        action is StartIncrementalLoad
            hide when invalid
        action is UploadIncrementalBudget
            hide when invalid
        action is CompleteIncrementalLoad
            hide when invalid
        action is Lock
            hide when invalid
        action is Unlock
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is CreateBudgetScenario
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is save and new
            label is "_"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    EditTemplates is a Panel
        visible when (CommitmentType.Budget)
        list is BudgetTemplate set.ScenarioTemplates
    Data is a Panel
        visible when (CommitmentType.Budget)
        list is AllTotalsRel.BudgetScenarioList
    ChangeRequests is a Panel
        visible when (CanDisplayChangeOrders)
        list is BudgetChangeOrdersRel.BudgetChangeOrdersForScenario
    Changes is a Panel
        title is "ChangeDetailHistory"
        visible when (DisplayChanges)
        list is ReleasedLinesRel.ReleasedLinesForScenario
    OldChanges is a Panel
        visible when (DisplayOldChanges)
        list is BudgetChangesRel.BudgetChangeForScenarioList
    IncrementalLoads is a Panel
        visible when (HasIncrementalLoads)
        list is IncrementalLoadsRel.LoadList
    Imports is a Panel
        visible when (CommitmentType.Budget)
        list is BudgetImport set.ScenarioList
    ImportResults is a Panel
        visible when (CommitmentType.Budget)
        list is BudgetImportResult set.BudgetImportResults
