AcknowledgementMessageMainDetail is a Form
    Layout
        header2 of "GeneralInformation"
        three column distributed
            column1
                Item
                    display as text
                text of "Ack_Values"
                    header4
                DerivedAcknowledgementEDIUnitCost
                    label is "UnitCost"
                    display as text
                DerivedAcknowledgementEDIQuantity
                    label is "Quantity"
                    display as text
                DerivedAcknowledgementEDIUOM
                    label is "UnitOfMeasure"
                    display as text
                visible when (AcknowledgementVendorItemSearch)
                    first POAcknowledgementVendorItemMessageRel.EDIAlpha
                        label is "VendorItem"
                        display as text
                visible when (AcknowledgementDeliveryDateSearch)
                    first POAcknowledgementDeliveryDateMessageRel.EDIDate
                        label is "DeliveryDate"
                        display as text
                visible when (AcknowledgementItemSubstituteSearch)
                    first POAcknowledgementItemSubstituteMessageRel.EDIAlpha
                        label is "SubstituteItem"
                        display as text
                visible when (AcknowledgementRejectedSearch)
                    Item
                        label is "ItemRejected"
                        display as text
                visible when (PurchaseOrderLineSourceExists)
                    first PurchaseOrderLineSourcesRel.RequestingLocation.RepresentativeText
                        display as text
            column2
                Quantity
                    label is "Quantity"
                    display as text
                text of "PO_Values"
                    header4
                VendorBuyUnitCost
                    label is "UnitCost"
                    display as text
                Quantity
                    label is "Quantity"
                    display as text
                EnteredBuyUOM
                    label is "UnitOfMeasure"
                    display as text
                visible when (AcknowledgementVendorItemSearch)
                    first POAcknowledgementVendorItemMessageRel.POAlpha
                        label is "VendorItem"
                        display as text
                visible when (AcknowledgementDeliveryDateSearch)
                    first POAcknowledgementDeliveryDateMessageRel.PODate
                        label is "DeliveryDate"
                        display as text
                visible when (AcknowledgementItemSubstituteSearch)
                    first POAcknowledgementItemSubstituteMessageRel.POAlpha
                        label is "SubstituteItem"
                        display as text
            column3
                EnteredBuyUOM
                    display as text
                visible when (HasContract)
                    text of "Contract_Values"
                        header4
                    button of "<ContractLine.BaseCost>"
                        link is ContractLineLink
                        label is "ContractUnitCost"
                        display as link
                    button of "<Contract>"
                        link is ContractLink
                        label is "Contract"
                        display as link
                    paragraph
                        ContractRel.PrimaryContactRel.DerivedName
                            label is "Contact"
                            display as text
                        button of icon.phone
                            visible when (ContractRel.PrimaryContactRel.PhoneNumberExists)
                            link is "tel:<ContractRel.PrimaryContactRel.DerivedPhone>"
                    paragraph
                        ContractRel.PrimaryContactRel.DerivedEmail
                            label is "EmailAddress"
                            display as text
                        button of icon.mail
                            visible when (ContractRel.PrimaryContactRel.EmailAddressExists)
                            link is "mailto:<ContractRel.PrimaryContactRel.DerivedEmail>"
                    ContractRel.ContractType
                        label is "ContractType"
                        display as text
                    visible when (ContractDiffFromWorkingContract)
                        ContractRel.WorkingContractID
                            label is "WorkingContract"
                            display as text
        single column
            visible when (SingleAcknowledgementMessage)
                first PurchaseOrderAcknowledgementMessageRel.MessageDisplay
                    label is "Message"
                    display as text
