GeneralLedgerTransactionForm is a Form
    propagate as a drill
    title is "Transaction"
    Layout
        three column distributed
            paragraph
                AccountingEntity
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
                AccountingEntity.Name
                    no label
                    display as text
            paragraph
                paragraph
                    PrimaryLedger
                        display as text
                    visible when (GainLossTransactionOnly)
                        GainLossRunSequence
            paragraph
                GeneralLedgerTransaction
                    label is "GlobalLedgerTransaction"
                    display as text
                System
                    display as text
        three column distributed
            GeneralLedgerJournalControl.JournalType
            GeneralLedgerJournalControl
                label is "Journal"
            paragraph
                Status
                    display as text
                PostingDate
                    label is "PostingDate"
                    display as text
        three column distributed
            GeneralLedgerClosePeriod.GeneralLedgerCloseYear
                label is "Year"
            GeneralLedgerClosePeriod.GeneralLedgerCalendarPeriod.Date
                label is "PeriodEndDate"
            GeneralLedgerClosePeriod.PeriodName
                label is "PeriodName"
        paragraph
            FinanceCodeBlock
                label is "FinanceStructure"
                compact format
            FinanceCodeBlock.GeneralLedgerChartAccount.AccountDescription
                display as text
        visible when (GeneralLedgerJournalControl.IsAIntercompanyBillingJournal)
            three column distributed
                FromBillingCompany
                    label is "BillFromCompany"
                    select is CompaniesForIntercompanyBilling
                ToBillingCompany
                    label is "BillToCompany"
                    select is CompaniesForIntercompanyBilling
                BillingRechargeItem
                    select is ActiveRechargeItemList
        blank line
        three column distributed
            TransactionDate
                label is "TransactionDate"
            TransactionAmount
                label is "Amount"
            CurrencyCode
                label is "Currency"
        three column distributed
            UnitsAmount
                label is "Unit"
            CurrencyTable
            visible when (not IsACommitmentJournal)
                paragraph
                    GeneralLedgerEvent
                        label is "Event"
                    GeneralLedgerEvent.Description
                        no label
                        display as text
        three column distributed
            Description
            Reference
            visible when (not IsACommitmentJournal)
                AutoReverse
                    label is "ReverseTransaction"
        header2 of "CurrencyAmounts"
        ReportCurrencyAmount
