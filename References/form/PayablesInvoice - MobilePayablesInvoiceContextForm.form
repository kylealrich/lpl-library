MobilePayablesInvoiceContextForm is a Form
    title is "Invoice"
    Layout
        two column table
            column1 of 50%
                DerivedInvoiceAmountAndCurrency
                    label is "Total"
                    display as text
                InvoiceDate
                    display as text
            column2 of 50%
                Status
                    no label
                    display as tag
                        color of yellow when (Status.PendingApproval)
                        color of green when (Status.Released)
                DueDate
                    display as text
        two column table
            column1
                button of "ManualReject"
                    visible when (RejectValid)
                    action is PendingApproval.ManualReject
            column2
                button of "ManualApprove"
                    visible when (ApproveValid)
                    action is PendingApproval.ManualApprove
                    color of blue
                button of "ManualApprove"
                    visible when (ApproveValidPlus)
                    action is PendingApproval.ManualApprovePlus
                    color of blue
