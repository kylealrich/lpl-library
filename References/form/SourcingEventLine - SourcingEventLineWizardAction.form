SourcingEventLineWizardAction is an ActionForm
    action is Draft.CreateFromWizard
    title is "CreateEventLineForEvent<SourcingEvent>"
    Layout
        paragraph
            Company
            SourcingEvent
        single column
            ItemType
                display as required when (ItemTypeRequired)
                when value changed
                    refresh ItemNumberRequired
            text of "SelectAnItemTypeToDisplayProperFields"
                italics
            visible when (ItemType.Inventoried)
                paragraph
                    ItemNumber
                        display as required when (ItemNumberRequired)
                        when value changed
                            refresh ItemDescriptionRequired
                    ItemNumber.Description
                        no label
                        display as text
            visible when (ItemType.NonStock)
                paragraph
                    ItemNumber
                        display as required when (ItemNumberRequired)
                        when value changed
                            refresh ItemDescriptionRequired
                    ItemNumber.Description
                        no label
                        display as text
            visible when (ItemType.Special)
                Name
                    when value changed
                        refresh ItemDescriptionRequired
                ItemNumber
                    display as required when (ItemNumberRequired)
                    when value changed
                        refresh ItemDescriptionRequired
                ItemDescription
                    label is "Description"
                    display as required when (ItemDescriptionRequired)
                Description
                    label is "ExpandedDescription"
            visible when (ItemType.Service)
                Name
                    when value changed
                        refresh ItemDescriptionRequired
                ItemNumber
                    display as required when (ItemNumberRequired)
                    when value changed
                        refresh ItemDescriptionRequired
                ItemDescription
                    label is "Description"
                    display as required when (ItemDescriptionRequired)
                Description
                    label is "ExpandedDescription"
                ServiceCode
            visible when (ItemType entered)
                Quantity
                    display as required when (QuantityRequired)
                UOM.UnitOfMeasure
                    label is "UnitOfMeasure"
                    display as required when (UOMRequired)
            OutputType
                display as required when (OutputTypeRequired)
                when value changed
                    refresh ItemNumberRequired
                    refresh RequestedDeliveryDateRequired
                    refresh ShipToRequired
                    refresh UOMRequired
            visible when (OutputType.PO)
                ShipTo
                    display as required when (ShipToRequired)
                RequestedDeliveryDate
                    display as required when (RequestedDeliveryDateRequired)
