MainForm is a Form
    Layout
        two column distributed
            column1
                paragraph
                    CashLedgerPayablesPayment.BankTransactionCode
                        select is CashPayments
                    CashLedgerPayablesPayment.BankTransactionCode.Description
                        no label
                        display as text
                PaymentDate
                TransactionNumber
                paragraph
                    PaidVendor
                    PaidVendor.VendorName
                        no label
                        display as text
                PaymentAmount
                paragraph
                    PayCurrency
                        label is "InvoiceCurrency"
                    PayCurrency.Description
                        no label
                        display as text
                visible when (IsRejected)
                    CancelRequestType
                        label is "CancelType"
                        display as text
            column2
                ReleasedStatus
                    display as text
                PaymentStatus
                    display as text
                CashLedgerTransactionIdentifier
                    display as text
                paragraph
                    RemitToCode
                    RemitToCode.VendorName
                        no label
                        display as text
                PaidAmountInvoiceCurrency
                    label is "AppliedAmount"
                    display as text
                AppliedAmountBankAccountCurrency.BaseAmount.ToCurrency
                    display as text
        two column distributed
            column1
                header2 of "BankCurrencyInformation"
                CashCode.Currency
                    label is "BankAccount<CashCode>Currency"
                    display as text
                PaymentAmountBankAccountCurrency.EnteredCurrencyRate
                    label is "ExchangeRateFrom<PayCurrency>"
                paragraph
                    PaymentAmountBankAccountCurrency.EnteredCurrencyAmount
                        label is "PaymentAmount"
                        display as text
                    AppliedAmountBankAccountCurrency.BaseAmount.EnteredCurrencyAmount
                        label is "AppliedAmount"
                        display as text
            column2
                header2 of "CompanyCurrencyInformation"
                display as text
                    Company.Currency
                        label is "Company<Company>BaseCurrency"
                    BasePaymentAmount.EnteredCurrencyRate
                        label is "ExchangeRateFrom<PayCurrency>"
                    paragraph
                        BasePaymentAmount.EnteredCurrencyAmount
                            label is "PaymentAmount"
                        AppliedBaseAmount.BaseAmount.EnteredCurrencyAmount
                            label is "AppliedAmount"
