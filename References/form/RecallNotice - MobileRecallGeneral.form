MobileRecallGeneral is a Form
    title is "General"
    Layout
        header3 of "_"
        single column
            Description
                use text area of 4 lines
            RecallType
                label is "NoticeType"
                display as required when (true)
            RecallType.Description
                label is "TypeDescription"
        single column
            Equipment
            QuantityRequired
        header3 of "Dates"
        single column
            create date
                label is "CreationDate"
        two column table
            column1
                RecallDate
            column2
                RecallReceivedDate
        two column table
            column1
                ManufactureDateRange.Begin
                    label is "ManufactureDateRange"
            column2
                ManufactureDateRange.End
                    label is "_"
        two column table
            column1
                DistributionDateRange.Begin
                    label is "DistributionDateRange"
            column2
                DistributionDateRange.End
                    label is "_"
        blank line
        header3 of "Source"
        single column
            RecallSource
            visible when (ReportedByRecallUserEntered)
                ReportedByRecallUser.FirstLastName
                    label is "ReportedBy"
            RecallCoordinator
                label is "Coordinator"
                select is RecallCoordinatorList
                display as required when (true)
            RecallCoordinator.Employee.FirstLastName
                label is "CoordinatorName"
            Vendor
            visible when (Vendor entered)
                Vendor.VendorName
                    label is "VendorName"
                    display as text
            visible when (SupplierGroupExists)
                single column
                    Supplier
                    visible when (Supplier entered)
                        Supplier.SupplierName
                            label is "SupplierName"
                            display as text
        header3 of "ProductDefaults"
        single column
            RecallTaskInstruction
                label is "TaskInstruction"
                display as required when (true)
            TaskInstructionDescription
                use text area of 3 lines
        header3 of "Manufacturer"
        single column
            ManufacturerCodeDivision
                label is "ManufacturerCode"
                compact format
            ManufacturerGln
            MfgGlobalLocationNumberRel.Description
                no label
                display as text
            ManufacturerName
            ManufacturerAddress
                form is PostalAddressMinimum
        header3 of "ManufacturerContact"
        single column
            ManufacturerContact.GivenName
                label is "FirstName"
            ManufacturerContact.FamilyName
                label is "LastName"
            ManufacturerPhone
                label is "PhoneNumber"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                header5
                italics
            ManufacturerEmail
                label is "EmailAddress"
        header3 of "FoodAndDrugAdministration_(FDA)"
        single column
            FDAClassification
                label is "Classification"
            FDADistrict
                label is "District"
            FDAComments
                label is "Comments"
                use text area of 3 lines
            text of "IfItemFoundAndNoticeNotClosedRestrictCreationOf"
                header3
                italics
            RestrictPurchaseOrderCreation
                label is "PurchaseOrderLine"
            RestrictRequisitionCreation
                label is "RequisitionLine"
            RestrictInventoryIssue
                label is "InventoryIssueTransactionLine"
            RestrictInventoryReceipt
                label is "InventoryReceiptTransactionLine"
