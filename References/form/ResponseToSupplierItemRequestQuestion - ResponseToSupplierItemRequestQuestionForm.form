ResponseToSupplierItemRequestQuestionForm is a Form
    is primary
    title is "QuestionResponse"
    Actions
        action is save
    Layout
        visible when (not RecallNotice.ProposedItem.ProposedNotSubmitted)
            single column
                RecallProductQuestion.Description
                    label is number
                    display as text
                visible when (HasAttachment)
                    button of "<RecallProductQuestion.Attachment.Title>"
                        view RecallProductQuestion.Attachment.File
                        display as link
                text of "<ConditionalAnswerLabel>"
                    italics
                Response
                    label is "<ResponseLabel>"
                    display as text
            paragraph
                visible when (AttachmentUploadAllowed)
                    paragraph
                        visible when (HasResponseAttachment)
                            button of "<Attachment.Title>"
                                view Attachment.File
                                display as link
        visible when (RecallNotice.ProposedItem.ProposedNotSubmitted)
            single column
                RecallProductQuestion.Description
                    label is number
                    display as text
                visible when (HasAttachment)
                    button of "<RecallProductQuestion.Attachment.Title>"
                        view RecallProductQuestion.Attachment.File
                        display as link
                text of "<ConditionalAnswerLabel>"
                    italics
                Response
                    label is "<ResponseLabel>"
            paragraph
                visible when (AttachmentUploadAllowed)
                    paragraph
                        Attachment.File
                            label is "<AttachmentLabel>"
                        visible when (HasResponseAttachment)
                            button of "<Attachment.Title>"
                                view Attachment.File
                                display as link
