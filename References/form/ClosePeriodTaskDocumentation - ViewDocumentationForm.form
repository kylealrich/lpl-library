ViewDocumentationForm is a Form
    title is "DocumentDetails"
    Layout
        header3 of "<Description>"
        blank line
        single column
            paragraph
                update stamp
                    label is "Updated"
                    display as text
                Author.FirstAndLastName
                    label is "By"
                    display as text
            blank line
            visible when (HasNotes)
                Notes
                    display as text
                    use text area of 10 lines
                blank line
            button of "<Attachment.Title>"
                visible when (HasAttachment)
                view Attachment.File
                display as link
            button of "<Link>"
                visible when (HasLink)
                link is external "<Link>"
                display as link
