ProcurementCardUserFormContext is a Form
    Layout
        visible when (ProcurementCardUserExists)
            five column distributed
                column1
                    ProcurementCardUser.Employee.ResourcePicture.File
                        display as portrait image
                            missing image is random background
                                foreground text is "<ProcurementCardUser.Employee.Name.Initials>"
                column2
                    paragraph
                        ProcurementCardUser.Employee.FirstLastNameID
                            label is "Employee"
                            display as text
                        button of icon.profile
                            link is EmployeeNav
                    HROrganization.HROrgAndDescription
                        label is "HROrganization"
                        display as text
                column3
                    paragraph
                        ProcurementCardUser.Employee.EmployeeWorkEmailAddress
                            label is "WorkEmail"
                            display as text
                        button of icon.mail
                            visible when (ProcurementCardUser.Employee.EmployeeWorkEmailAddressExists)
                            link is "mailto:<ProcurementCardUser.Employee.EmployeeWorkEmailAddress>"
                    ProcurementGroup.ProcurementGroupDescription
                        label is "ProcurementGroup"
                        display as text
                column4
                    paragraph
                        ProcurementCardUser.Employee.EmployeeWorkTelephone
                            label is "WorkPhone"
                            display as text
                        button of icon.phone
                            visible when (ProcurementCardUser.Employee.EmployeeWorkPhoneExists)
                            link is "tel:<ProcurementCardUser.Employee.EmployeeWorkTelephone>"
                column5
                    DerivedStatusDisplay
                        label is "Status"
                        display as tag
                            color of green when (Active)
                            color of red when (not Active)
