CustomerFormContext is a Form
    Layout
        visible when (RecordExists)
            display as text
                four column distributed
                    column1
                        Logo.File
                            no label
                            align as label
                            display as portrait image up to 5 lines
                                missing image is random background
                                    foreground text is "<ShortName>"
                    column2
                        paragraph
                            CustomerGroup.RepresentativeText
                            CustomerGroup.Currency
                        paragraph
                            RepresentativeText
                    column3
                        LegalName
                        SearchName
                    column4
                        CustomerReference
                        paragraph
                            CustomerCompanyGroup
                            CustomerCompanyGroup.Description
                            button of "CustomerCompanyGroup"
                                link is CustomerCompanyGroupNav
                                display as link
