PurchaseOrderLineOptions is a Form
    Layout
        four column distributed
            column1
                EarlyDeliveryDate
                    label is "DeliveryDateBegin"
                    display as required when (EarlyDeliveryDateRequired)
            column2
                LateDeliveryDate
                    label is "DeliveryDateEnd"
            column3
                visible when (ItemType.Special)
                    StockWeight
                        label is "Weight"
                visible when (not ItemType.Special)
                    StockWeight
                        label is "Weight"
                        display as text
            column4
                visible when (ItemType.Special)
                    StockVolume
                        label is "Volume"
                visible when (not ItemType.Special)
                    StockVolume
                        label is "Volume"
                        display as text
        four column distributed
            InspectionRequired
                label is "Inspection"
            CertificationRequired
                label is "Certification"
            Chemical
            RebuildRepair
        four column distributed
            MSDSRequired
                label is "M\\S\\D\\SRequested"
                display as required when (MSDSRequiredCondition)
            TestRequired
            ExcludeFromAddOnChargeSpread
        single column
            visible when (IsOneSourceTax)
                ShipTerm
        header2 of "Codes"
        single column
            visible when (IsDisplayOnlyCommodityCode)
                CommodityCode
                    display as text
            visible when (not IsDisplayOnlyCommodityCode)
                CommodityCode
                    display as required when (PurchaseOrder.Buyer.RequireCommodityCode)
        two column distributed
            Manufacturer
                label is "ManufacturerInformation"
                compact format
            ManufacturerNumber
                label is "ManufacturerNumber"
        two column distributed
            MajorPurchasingClass
                show up to 10 characters
            MinorPurchasingClass
                show up to 10 characters
        two column distributed
            UNSPSCCode
                compact format
            StandardCommentCode
                label is "CommentCode"
        header2 of "Tolerance"
        four column
            column1
                text of "_"
                text of "________Overshipment"
                    header5
                text of "________Undershipment"
                    header5
            column2
                text of "_"
                paragraph
                    text of "__"
                    OvershipmentTolerancePercentage
                        no label
                        show up to 10 characters
                    text of "%"
                        header5
                        bold
                paragraph
                    text of "__"
                    UndershipmentTolerancePercentage
                        no label
                    text of "%"
                        header5
                        bold
            column3
                text of "______"
                text of "______"
                text of "______"
                text of "______"
            column4
                text of "Option"
                    header5
                OvershipmentToleranceOption
                    no label
                UndershipmentToleranceOption
                    no label
        single column
            IgnoreLeadTimeCalculation
        header2 of "Global"
        three column distributed
            ICNCode
                show up to 10 characters
            paragraph
                SupplementaryQuantity
                ICNCode.SupplementaryUOM
                    label is "UOM"
                    display as text
            GlobalLineType
                label is "LineType"
        visible when (false)
            Item
                when value changed
                    refresh MSDSRequiredCondition
            ItemType
                when value changed
                    refresh MSDSRequiredCondition
            ShipToLocation
                when value changed
                    refresh MSDSRequiredCondition
