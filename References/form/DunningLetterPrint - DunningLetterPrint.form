DunningLetterPrint is an ActionForm
    action is DunningLetterPrint
    title is "BasicDunningLetterFileGeneration"
    Layout
        two column
            Company
            Company.Name
                no label
                display as text
        single column
            text of "Or"
                bold
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            visible when (not Company.UseIDM)
                AlignCnt
                    label is "AlignmentForms"
                    show up to 20 characters
            ByCurrCd
                label is "ByCurrency"
            IncludeCredits
            visible when (not Company.UseIDM)
                RptOpt
                    label is "ReportSequence"
        header2 of "CycleCodes"
        three column distributed
            DunCycle.DunCycle[1]
                no label
                select is DunningCycle
            DunCycle.DunCycle[2]
                no label
                select is DunningCycle
            DunCycle.DunCycle[3]
                no label
                select is DunningCycle
        three column distributed
            DunCycle.DunCycle[4]
                no label
                select is DunningCycle
            DunCycle.DunCycle[5]
                no label
                select is DunningCycle
            DunCycle.DunCycle[6]
                no label
                select is DunningCycle
        three column distributed
            DunCycle.DunCycle[7]
                no label
                select is DunningCycle
            DunCycle.DunCycle[8]
                no label
                select is DunningCycle
            DunCycle.DunCycle[9]
                no label
                select is DunningCycle
        single column
            DunCycle.DunCycle[10]
                no label
                select is DunningCycle
        visible when (Company.UseIDM)
            header2 of "PrinterOption"
            paragraph
                IDMPrinter
                IDMPrinter.Description
                    no label
                    display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DunningLetterPrintReport_RDG
                DunningDetail_RDG
            column2 of 25%
                DunningLetterPrintReport_XPT
                DunningDetail_XPT
