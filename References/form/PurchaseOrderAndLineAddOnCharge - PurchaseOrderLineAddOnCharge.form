PurchaseOrderLineAddOnCharge is a Form
    use for action CreatePurchaseOrderLineAddOnCharge
    title is "PurchaseOrderLineAddOnCharge"
    Layout
        header2 of "PurchaseOrder"
        display as text
            five column distributed
                column1
                    PurchaseOrder
                column2
                    PurchaseOrder.Vendor.DerivedVendorNameID
                        label is "Vendor"
                column3
                    paragraph
                        PurchaseOrder.CalculateTotalAmount
                            label is "Total"
                        PurchaseOrder.Currency
                            no label
                column4
                    PurchaseOrder.PurchaseOrderDate
                        label is "Date"
                column5
                    visible when (PurchaseOrder.MiscellaneousAddOnChargeExists)
                        PurchaseOrder.HasMiscellaneousAddOnCostLabel
                            no label
        header2 of "PurchaseOrderLine"
        display as text
            paragraph distributed
                PurchaseOrderLine.LineNumber
                    label is "Line"
                paragraph
                    PurchaseOrderLine.Item
                    PurchaseOrderLine.Description
                    PurchaseOrderLine.ItemType
                paragraph
                    PurchaseOrderLine.Quantity
                    PurchaseOrderLine.EnteredBuyUOM
                        label is "UOM"
                    PurchaseOrderLine.VendorBuyUnitCost
                        label is "UnitCost"
                    PurchaseOrderLine.TaxableUnitCost
                PurchaseOrderLine.EarlyDeliveryDate
                PurchaseOrderLine.ShipToLocation
        header2 of "AddOnCharge"
        three column
            column1
                paragraph
                    AddOnCharge
                    AddOnCharge.Description
                        no label
                        display as text
            column2
                AddOnChargeEntryMethod
            column3
                visible when (AddOnChargeEntryMethod.TotalAmount)
                    paragraph
                        ZeroCost
                        EnteredUnitCost
                            label is "UnitCost"
                            display as text
                        TotalAddOnChargeAmount
                            label is "TotalAddOnCost"
                visible when (AddOnChargeEntryMethod.RatePercentage)
                    paragraph
                        AddOnChargePercent
                            label is "Rate"
                        EnteredUnitCost
                            label is "UnitCost"
                            display as text
                        TotalAddOnChargeAmount
                            label is "TotalAddOnCost"
                            display as text
                visible when (AddOnChargeEntryMethod.UnitCost)
                    paragraph
                        EnteredUnitCost
                            label is "UnitCost"
                        TotalAddOnChargeAmount
                            label is "TotalAddOnCost"
                            display as text
        header2 of "ProcessFlags"
        four column distributed
            column1
                Taxable
            column2
                visible when (IsCostTypeAOC)
                    TaxCode
                visible when (not IsCostTypeAOC)
                    TaxCode
                        display as text
            column3
                ProductTaxCategory
            column4
                display as text
                    paragraph
                        visible when (HasInvoicedTax)
                            InvoicedTaxAmount
                        visible when (HasAccruedTax)
                            AccruedTaxAmount
        four column distributed
            Summarize
                label is "Summary"
            AddOnCharge.LandedAddOnCharge
                label is "LandedFlag"
            PrintOnPO
                label is "PrintOnPurchaseOrder"
            FromRequisition
                display as text
        header2 of "VendorInformation"
        two column distributed
            column1
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
                paragraph
                    PurchaseFromLocation
                        show up to 10 characters
                    PurchaseFromLocation.VendorName
                        no label
                        display as text
                paragraph
                    Currency
                    Currency.Description
                        no label
                        display as text
                EnteredCurrencyConversionRate
                    label is "ExchangeRate"
            column2
                paragraph
                    TransientAssetInformation.AssetTemplate
                        label is "Template,Asset"
                    TransientAssetInformation.Asset
                        no label
                visible when (not AddOnCharge.LandedAddOnCharge)
                    Account
                        label is "Account"
                        compact format
