ReleaseAssets is an ActionForm
    action is ReleaseAssets
    title is "ReleaseAssets"
    Layout
        paragraph
            TransientRelease
                label is "Update"
            IncludeTransactionAmounts
                label is "DisplayTransactionCurrency"
        paragraph
            Process
                label is "Transaction"
        paragraph
            Company
                select is Companies
            Company.GeneralLedgerCompany.Name
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                label is "Division"
                select is Divisions
            Division.Description
                no label
                display as text
        paragraph
            AssetGroup
                label is "AssetGroup"
                select is AssetGroups
        paragraph
            AssetAccountingUnitGroup
                label is "AssetDimensionGroup"
                select is AccountingUnitGroupsWithinCompany
            AssetAccountingUnitGroup.Description
                no label
                display as text
        paragraph
            DefaultTransactionDimension
                compact format
        paragraph
            AssetType
                label is "AssetType"
                compact format
                select is AssetTypesWithinCompany
        paragraph
            CreatorId
                label is "CreatorI\\D"
