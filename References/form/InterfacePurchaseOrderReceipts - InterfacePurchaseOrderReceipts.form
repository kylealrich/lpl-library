InterfacePurchaseOrderReceipts is an ActionForm
    action is InterfacePurchaseOrderReceipts
    title is "InterfacePurchaseOrderReceipts"
    Layout
        single column
            PrmRunGroup
                label is "RunGroup"
            ProcessingOption
        two column
            PrmCompany
                label is "Company"
            PrmCompany.Name
                no label
                display as text
        single column
            ReleaseReceipts
                label is "ReleaseReceipts"
                    left of field
            visible when (ReleaseReceipts)
                ReleaseOption
                    label is "ReleaseOption"
                        left of field
            AllowDropshipReceivers
                label is "AllowDropshipReceivers"
                    left of field
            AllowMatchItemOrVendorItem
                label is "AllowMatchOnEitherItemOrVendorItem"
                    left of field
            visible when (ProcessingOption.DatabaseFile)
                IncludeRecordsInError
                    label is "IncludeRecordsInError"
                        left of field
                text of "IfRunForErrorRunGroupRecordsInErrorWillAutomaticallyBeIncluded"
                    italics
            MoveErrorsToNewRunGroup
                label is "MoveErrorsToNewRunGroup"
                    left of field
            visible when (MoveErrorsToNewRunGroup)
                PrmErrorRunGroupPrefix
                    label is "ErrorRunGroupPrefix"
            visible when (ProcessingOption.CSVFile)
                EnableGTINProcessing
                    label is "EnableGTINProcessing"
                        left of field
                EnableGLNProcessing
                    label is "EnableGLNProcessing"
                        left of field
