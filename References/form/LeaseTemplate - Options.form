Options is a Form
    Layout
        three column
            column1 of 40%
                header2 of "Termination"
                TerminationOption
                ExerciseTermination
                    label is "ReasonablyCertain"
                visible when (TerminationOption)
                    paragraph
                        TerminationGainLossAccount
                            compact format
                        TerminationGainLossAccount.GeneralLedgerChartAccount.AccountDescription
                            label is "_"
                            display as text
                    TerminationNonLeaseComponent
            column2 of 30%
                header2 of "Renewal"
                ExtensionOption
                    label is "RenewalOption"
                ExerciseExtension
                    label is "ReasonablyCertain"
                visible when (ExtensionOption)
                    NumberOfExtensionOptions
                        label is "NumberOfRenewalOptions"
                    LengthOfExtension
                        label is "RenewalTermInMonths"
            column3 of 30%
                header2 of "Override"
                SkipFMVTest
                Fas13Flag
                    label is "PerformClassificationTest"
                LeaseClassification
                    label is "Classification"
                OverrideShortTermLease
                    label is "ClassifyShortTermLeaseAsALongTermLease"
