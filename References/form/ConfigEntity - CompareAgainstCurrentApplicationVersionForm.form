CompareAgainstCurrentApplicationVersionForm is a Form
    title is "CompareAgainstCurrentApplicationVersion"
    Layout
        header2 of "_"
        two column distributed
            column1
                Name
                    no label
                    header1
                    bold
                    display as text
                    raise red alert when (Status.Invalid)
                        mouse over text is "Invalid"
                    raise yellow alert when (Status.Inactive)
                        mouse over text is "Inactive"
                    raise green alert when (Status.Active)
                        mouse over text is "Active"
                paragraph
                    visible when (InViewContext)
                        BusinessView
                            header3
                            display as text
                    EntityType
                        header3
                        display as text
                    visible when (IsOverriddenByPersonalization)
                        OverriddenCount
                            label is "OverridingPersonalizations"
                            header3
                            display as tag
                                color of orange
                    visible when (InViewContext)
                        button of "ViewBusinessClassLPL"
                            link is LPLViewer
                            align as label
                            display as link
            column2
                DerivedLastChange
                    no label
                    display as text
                paragraph
                    button of "Edit"
                        action is Edit
                        is primary
                    button of "Activate"
                        visible when (not Status.Active)
                        action is Activate
                    button of "Deactivate"
                        visible when (not Status.Inactive)
                        action is Deactivate
                    button of "MakePersonalization"
                        visible when (IsMakePersonalizationValid)
                        action is MakePersonalization
                    button of "Share"
                        visible when (IsShareable)
                        action is SharePersonalization
                    button of "MakeConfiguration"
                        visible when (IsMakeConfigurationValid)
                        action is MakeConfiguration
        header2 of "_"
        single column
            visible when (not IsSecurityClass)
                text of "<CompareHeaderMF>"
                    header4
                    bold
            visible when (IsSecurityClass)
                text of "<SecurityCompareHeaderMF>"
                    header4
                    bold
            LPL
                no label
                use text area of 30 lines
                compare with CurrentFormattedLPL
            visible when (HasErrorText)
                paragraph
                    ErrorText
                        use text area of 5 lines
