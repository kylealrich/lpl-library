MassReassign is an ActionForm
    action is MassReassign
    title is "MassReassign"
    Layout
        header3 of "EnterATaskSelectionToDefineWhichOpenTasksShouldBeReassigned"
        paragraph
            PrmTaskSelection
                label is "TaskSelection"
            PrmTaskSelection.Condition
                no label
                display as text
        blank line
        header3 of "ReassignTasksTo:"
        two column
            PrmFinanceTeam
                label is "Team"
            PrmFinanceTeam.Description
                no label
                display as text
        two column
            PrmTaskOwner
                label is "TaskOwner"
                compact format
                select is FinanceTeamMemberActiveSelect
            PrmTaskOwner.PreferredPresentationName
                no label
                display as text
        blank line
        visible when (not OneTimeTask)
            header3 of "ScopeOfChange"
            single column
                PrmScopeOfChange
                    label is "DoThisFor"
