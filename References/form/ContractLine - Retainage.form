Retainage is a Form
    title is "Retainage"
    Layout
        single column
            Retainage
                label is "LineIsSubjectToRetainage"
            visible when (Retainage)
                visible when (CostOption.CostRequired)
                    RetainagePercent1
                        label is "FirstRetainagePercent"
                    RetainageUpToPercent
                        label is "UpToPercentComplete"
                    RetainagePercent2
                        label is "SecondRetainagePercent"
                    RetainageOverridePercent
                        label is "OverridePercentComplete"
                    RetainagePercentComplete
                        label is "CalculatedPercentComplete"
                        display as text
                    RetainageInvoiceAmount
                        label is "InvoicedAmount"
                        display as text
                    LifetimeMaximumAmount
                visible when (CostOption.VendorDetermined)
                    visible when (not ItemType.Service)
                        RetainagePercent1
                            label is "FirstRetainagePercent"
                        RetainageUpToPercent
                            label is "UpToPercentComplete"
                        RetainagePercent2
                            label is "SecondRetainagePercent"
                        RetainageOverridePercent
                            label is "OverridePercentComplete"
                        RetainagePercentComplete
                            label is "CalculatedPercentComplete"
                            display as text
                        RetainageInvoiceAmount
                            label is "InvoicedAmount"
                            display as text
                        LifetimeMaximumAmount
