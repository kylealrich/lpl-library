ItemSerialNumber is a Form
    is primary
    Actions
        action is SerialTransfer
            action icon is transfer
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        display as text
            two column distributed
                Company.RepresentativeText
                paragraph
                    Item
                        label is "Item"
                    Item.Description
                LastReceiptDate
                    label is "LastReceiptDate"
                Bin
                    label is "Bin"
                KitItemSerial.KitItem
                paragraph
                    InventoryLocation.RepresentativeText
                        label is "InventoryLocation"
                ItemSerialNumber
                    label is "ItemSerialNumber"
                LastIssueDate
                    label is "LastIssueDate"
                Status
                    label is "Status"
                KitItemSerial.KitSerial
