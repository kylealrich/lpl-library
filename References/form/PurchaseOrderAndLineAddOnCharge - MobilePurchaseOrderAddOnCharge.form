MobilePurchaseOrderAddOnCharge is a Form
    title is "AddOnCharge"
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        two column
            column1 of 50%
                AddOnCharge
                    select is MobileActiveAddOnCostCodes
            column2 of 50%
                AddOnChargeEntryMethod
                    label is "EntryMethod"
                    show up to 5 characters
        paragraph
            visible when (AddOnCharge entered)
                AddOnCharge.Description
                    label is "Description"
                    display as text
        two column
            column1 of 50%
                visible when (AddOnChargeEntryMethod.UnitCost)
                    EnteredUnitCost
                        label is "UnitCost"
                        show up to 10 characters
                visible when (AddOnChargeEntryMethod.RatePercentage)
                    AddOnChargePercent
                        label is "Rate"
                visible when (AddOnChargeEntryMethod.TotalAmount)
                    TotalAddOnChargeAmount
                        label is "TotalAddOnCost"
            column2 of 50%
                visible when (AddOnChargeEntryMethod.TotalAmount)
                    ZeroCost
                visible when (AddOnChargeEntryMethod.RatePercentage)
                    TotalAddOnChargeAmount
                        label is "TotalAddOnCost"
                        display as text
                visible when (AddOnChargeEntryMethod.UnitCost)
                    TotalAddOnChargeAmount
                        label is "TotalAddOnCost"
                        display as text
        paragraph
            Vendor
                select is MobileVendorSelectSearch
            Vendor.VendorName
                no label
                display as text
        paragraph
            PurchaseFromLocation
                label is "Location"
                select is MobileNonRemitToActivePurchaseFromLocations
                show up to 5 characters
            PurchaseFromLocation.VendorName
                no label
                display as text
        paragraph
            Currency
            EnteredCurrencyConversionRate
                label is "ExchangeRate"
                show up to 10 characters
        two column
            column1 of 50%
                paragraph
                    Summarize
                        label is "Summary"
                paragraph
                    Taxable
            column2 of 50%
                paragraph
                    PrintOnPO
                paragraph
                    AddOnCharge.LandedAddOnCharge
                        label is "Landed"
        two column
            column1 of 50%
                paragraph
                    TaxCode
                        label is "TaxCode"
                        display as text
            column2 of 50%
                paragraph
                    FromRequisition
                        display as text
        paragraph
            visible when (HasInvoicedTax)
                InvoicedTaxAmount
                    label is "InvoicedTax"
                    display as text
            visible when (HasAccruedTax)
                AccruedTaxAmount
                    label is "AccruedTax"
                    display as text
        paragraph
            TransientAssetInformation.AssetTemplate
                label is "Template"
                select is MobileAssetTemplate
            TransientAssetInformation.Asset
                label is "Asset"
                select is MobileAssetSelect
        single column
            Account
                label is "Account"
                compact format
