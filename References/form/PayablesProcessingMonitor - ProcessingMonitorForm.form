ProcessingMonitorForm is a Form
    is primary
    title is "PayablesProcessingMonitor"
    Layout
        three column distributed
            column1
                PayablesProcessingMonitor.RunProgram
                    label is "Program"
                paragraph
                    PayablesProcessingMonitor.Company
                    PayablesProcessingMonitor.Company.Name
                        no label
                        display as text
                paragraph
                    PayablesProcessingMonitor.PayGroup
                    PayablesProcessingMonitor.PayGroup.Name
                        no label
                        display as text
                paragraph
                    PayablesProcessingMonitor.BankTransactionCode
                    PayablesProcessingMonitor.BankTransactionCode.Description
                        no label
                        display as text
            column2
                Status
                paragraph
                    PayablesProcessingMonitor.AuthorityCode
                    PayablesProcessingMonitor.AuthorityCode.Description
                        no label
                        display as text
                paragraph
                    PayablesProcessingMonitor.ProcessGroup
                    PayablesProcessingMonitor.ProcessGroup.Description
                        no label
                        display as text
                PayablesProcessingMonitor.AccountStructure
            column3
                paragraph
                    visible when (RecordExists)
                        CreateDate
                            display as text
                    visible when (not RecordExists)
                        text of "_"
                paragraph
                    PayablesProcessingMonitor.ProcessLevel
                    PayablesProcessingMonitor.ProcessLevel.Name
                        no label
                        display as text
                paragraph
                    VendorGroup
                    VendorGroup.Description
                        no label
                        display as text
                paragraph
                    PayablesProcessingMonitor.RunGroup
