RecognizeContractRevenue is an ActionForm
    action is RecognizeContractRevenue
    Layout
        single column
            ContractGroup
            paragraph
                DateRange.Begin
                    label is "PostingDateSelectionRange"
                DateRange.End
                    label is "Through"
            ThroughDate
                label is "TransactionThroughDate"
            SelectionGroup
            FundingSourceDate
            RevenueDate
            visible when (RevenueApprovalNotRequired)
                Journalize
                    label is "JournalizeImmediately"
            visible when (Journalize)
                PostingDate
            paragraph
                BillingGroup
                BillingGroup.Description
                    no label
                    display as text
