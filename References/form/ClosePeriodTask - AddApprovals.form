AddApprovals is an ActionForm
    action is AddApprovals
    Layout
        header3 of "ThisWillSetTheTaskToRequireApprovalsUponCompletion"
        blank line
        paragraph
            PrmApprovalCode
                label is "ApprovalCode"
            PrmApprovalCode.Description
                no label
                display as text
        single column
            text of "_Or_"
                bold
        paragraph
            PrmApprover
                label is "Approver"
            PrmApprover.PreferredSimplePresentationName
                no label
                display as text
        single column
            text of "_Or_"
                bold
        paragraph
            PrmApprovalTeam
                label is "ApprovalTeam"
            PrmApprovalTeam.Description
                no label
                display as text
