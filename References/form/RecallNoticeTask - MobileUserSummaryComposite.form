MobileUserSummaryComposite is a CompositeForm
    title is "Task<RecallNoticeTask>Details"
    context form is MobileUserSummaryContext
    restrict action MobileAskAQuestion
    Actions
        action is save
            label is "_"
        action is refresh
            label is "_"
        action is New.AcceptTask
            action icon is approve
            hide when invalid
            valid when (TaskCanBeAccepted)
        action is Accepted.CompleteTask
            action icon is approve
            hide when invalid
            valid when (TaskCanBeCompleted)
        action is AskAQuestion
            action icon is request
            hide when invalid
            valid when (RecallNotice.ActiveRecallNotice)
        navigation is Resolutions
            action icon is claim
            label is "Resolutions"
            hide when invalid
            valid when (ShowResolutions)
    Products is a Panel
        visible when (HasRecallProducts)
        list is RecallNoticeTaskProductRel.MobileRecallNoticeTaskProductList
    QuestionResponses is a Panel
        visible when (TaskWithQuestions)
        template is RecallNoticeTaskQuestion set
            business class is ResponseToRecallNoticeTaskQuestion
                form is ResponseToRecallNoticeTaskQuestion
    CommentsAndAttachments is a Panel
        title is "CommentsAndAttachments<AttachmentCount>"
        visible when (not RecallNotice.PendingRecallNotice)
        list is RecallNoticeTaskAttachment set.MobileRecallNoticeTaskAttachmentList
    QAndAForum is a Panel
        title is "Q&A"
        visible when (HasTaskOwnerQandA)
        list is TaskOwnerQandARel.MobileRecallNoticeTaskQAndAList
