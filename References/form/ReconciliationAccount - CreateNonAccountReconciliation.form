CreateNonAccountReconciliation is an ActionForm
    action is CreateNonAccountReconciliation
    title is "NonAccountReconciliations"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        single column
            NonAccountReconciliation
            Description
                show up to 100 characters
            Purpose
                use text area of 3 lines
        paragraph
            CloseConfiguration
            CloseConfiguration.Description
                no label
                display as text
        two column distributed
            column1
                paragraph
                    ReconcileFrequency
                    visible when (ReconcileFrequency.Quarterly)
                        PeriodWithinQuarter
                Priority
                paragraph
                    FinanceTeam
                    FinanceTeam.Description
                        no label
                        display as text
                RequireSupportingDoco
                    label is "RequiresSupportingDocumentation"
                Active
            column2
                paragraph
                    CloseTask
                        label is "CloseTask"
                        select is TaskSelect
                    CloseTask.TaskName
                        no label
                        display as text
                Risk
                paragraph
                    AssignedResource
                        compact format
                    AssignedResource.PreferredPresentationName
                        no label
                        display as text
                    button of "<AssignedResource.EmailAddress>"
                        link is "mailto:<AssignedResource.EmailAddress>"
                        display as link
                paragraph
                    RequiresApproval
                    visible when (RequiresApproval)
                        paragraph
                            ApprovalCode
                                select is ApprovalCodesWithLevels
        visible when (not LevelType.Group)
            two column distributed
                column1
                    DetailReconciliationMethod
                column2
                    visible when (DetailReconciliationMethod.UseDetailReconciliationMatchRules)
                        paragraph
                            DetailReconciliationMatchRuleGroup
                            DetailReconciliationMatchRuleGroup.Description
                                no label
                                display as text
            visible when (DetailReconciliationMethod entered)
                two column distributed
                    column1
                        LoadInterfaceTransactions
                    column2
                        visible when (not LevelType.NonAccount)
                            paragraph
                                LoadGeneralLedgerTransactions
                                visible when (LoadGeneralLedgerTransactions)
                                    GeneralLedgerTransactionLevel
                                        label is "TransactionLevel"
                two column distributed
                    column1
                        DetailReconciliationCurrency
                    column2
                        DetailReconciliationSign
                            display as text
