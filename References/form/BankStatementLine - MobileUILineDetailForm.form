MobileUILineDetailForm is a Form
    title is "BankStatementLine"
    Layout
        single column
            Description
                use text area of 2 lines
        two column table
            display as text
                column1 of 50%
                    BankTransactionCode
                        label is "PaymentCode"
                    CashTransactionCategory
                        select is CashTransactionCategorySelect
                    RelatedReference
                    TransactionDate
                    TransactionType
                column2 of 50%
                    BankTransactionCode.Description
                        label is "Description"
                        display as text
                    CashTransactionCategory.Description
                        label is "Description"
                        display as text
                    BankReference
                    TextReference
                    TransactionType.Description
                        label is "Description"
                        display as text
        visible when (BankStatement.BankStatementInterfaceHeader.CAMT05XFormat)
            header2 of "ISO20022BankTransactionCodes"
            two column table
                column1 of 50%
                    ISO20022DomainCode
                    ISO20022FamilyCode
                    ISO20022SubFamilyCode
                column2 of 50%
                    ISO20022DomainCode.Description
                        label is "Description"
                        display as text
                    ISO20022FamilyCode.Description
                        label is "Description"
                        display as text
                    ISO20022SubFamilyCode.Description
                        label is "Description"
                        display as text
            header4 of "_"
        visible when (LineCurrencyNotCorporateBaseCurrency)
            two column table
                column1 of 50%
                    CorporateBaseAmount
                        display as text
                column2 of 50%
                    CashManagementGroup.Currency
                        label is "CashManagementGroupCurrency"
                        display as text
        visible when (LineCurrencyNotCompanyCurrency)
            two column table
                column1 of 50%
                    CompanyCurrencyAmount
                        display as text
                column2 of 50%
                    CashManagementAccount.LegalEntity.Currency
                        label is "LegalEntityCurrency"
                        display as text
        visible when (LineCurrencyNotLocationCurrency)
            two column table
                column1 of 50%
                    LocationCurrencyAmount
                        display as text
                column2 of 50%
                    CashManagementAccount.CashManagementLocation.Currency
                        label is "CashManagementLocationCurrency"
                        display as text
        single column
            Comment
                use text area of 2 lines
            ReconSummaryRecord.BankStatementReconciliation.Comment
                label is "ReconciliationComment"
                use text area of 2 lines
