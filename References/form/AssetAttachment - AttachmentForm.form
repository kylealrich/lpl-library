AttachmentForm is a Form
    is primary
    title is "Attachment"
    Layout
        paragraph
            FinanceEnterpriseGroup
                display as text
            FinanceEnterpriseGroup.EnterpriseGroup.Description
                no label
                display as text
        paragraph
            Asset
                display as text
            Asset.Description
                no label
                display as text
        single column
            AssetAttachment
                label is "AttachmentNumber"
                display as text
            Description
        paragraph
            Attachment
                compact format
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
