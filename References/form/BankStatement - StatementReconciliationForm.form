StatementReconciliationForm is a CompositeForm
    title is "ReconcileByStatement"
    context form is StatementReconciliationContextForm
        background is theme color
    Actions
        action is SwitchToListOverListView
            hide when invalid
        action is SwitchToCombinedListView
            hide when invalid
        action is Unreconciled.LoadAndReconcile
            label is "LoadAndReconcile"
            hide when invalid
        action is ClearCurrentReconciliationList
            label is "SaveAndClearCurrentReconciliation"
            hide when invalid
        action is ReconcileSelectedTransactions
            label is "ReconcileSelectedTransactions"
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    UnmatchedTransactions is a Panel
        title is "UnmatchedTransactions"
        visible when (not UsesListOverListManualReconView)
        list is BankStatementReconciliationRel.UnReconciledDetailsList
    UnmatchedTransactionsList is a MultiListPanel
        title is "UnmatchedTransactions"
        visible when (UsesListOverListManualReconView)
        list is BankStatementReconciliationRel.UnReconciledStatementLinesList
            show 8 lines
        list is BankStatementReconciliationRel.UnReconciledTransactionDetailsList
            show 9 lines
    CurrentSelectedTransactions is a Panel
        list is SelectedBankStatementReconciliationRel.SelectedCashTransactionsList
            helper list is SummaryReconciliationTransactionsRel.ReconciliationSummaryRecordHelperList
                action is SelectTransaction
                valid when (ShowSelectedTransactionsHelperList)
    MatchedTransactions is a Panel
        visible when (HasMatchedTransactions)
        list is MatchedReconciliationTransactionsRel.ReconciliationSummaryRecordList
    PendingTransactions is a Panel
        visible when (HasPendingTransactions)
        list is SummaryPendingReconciliationTransactionsRel.PendingReconciliationTransactionList
    DetailMatchedTransactions is a Panel
        visible when (HasMatchedDetailTransactions)
        list is MatchedStatementLineRel.DetailMatchedReconciliationTransactions
    BankStatementLines is a Panel
        list is BankStatementLine set.BankStatementLineList
    CashLedgerReconciledVariances is a Panel
        visible when (HasCashLedgerReconciledVariances)
        list is CashLedgerReconciledVariancesRel.CashLedgerReconciliationAdjustmentList
    ReconciliationVarianceDistributions is a Panel
        visible when (HasNonCashLedgerDistributions)
        list is NonCashLedgerDistribution set.StatementNonCashLedgerDistributionsList
