InventoryStandardCostValuation is an ActionForm
    action is InventoryStandardCostValuation
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            Location
            Location.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            ReportGrp
                label is "ReportGroup"
            ReportGrp.Name
                no label
                display as text
        blank line
        two column
            paragraph
                InvenMajcl
                    label is "InventoryClass:Major"
                    show up to 10 characters
                InvenMajcl.Description
                    no label
                    display as text
            paragraph
                InvenMincl
                    label is "InventoryClass:Minor"
                    show up to 10 characters
                InvenMincl.Description
                    no label
                    display as text
        blank line
        single column
            StdUpdFl
                label is "StandardCostUpdate"
        single column
            GlPostingDate
                label is "GLPostDate"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InventoryStandardCostValuationReport_RDG
            column2 of 25%
                InventoryStandardCostValuationReport_XPT
