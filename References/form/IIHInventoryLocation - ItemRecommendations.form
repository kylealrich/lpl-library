ItemRecommendations is a CompositeForm
    title is "<IIHInventoryLocation>"
    disable field options
    context form is InventoryValuesContext
        show context form on left
        background is theme color
    PerpetualRecommendations is a Panel
        visible when (LocationType.InventoryLocation)
        list is IIHItemLocationsRel.AllItemLocationWithRecommendationView
    ParRecommendations is a Panel
        visible when (not LocationType.InventoryLocation)
        list is IIHItemLocationsRel.AllParItemLocationWithRecommendationView
