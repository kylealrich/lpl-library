InvoiceTotalsInBillingCurrency is a Form
    restrict action Unreleased.Create
    restrict action Unreleased.CreateInvoiceFromInvoice
    restrict action Unreleased.CreateInvoiceFromOrder
    restrict action Unreleased.Delete
    restrict action Unreleased.ReleaseBatch
    restrict action Unreleased.ReleaseBatchAndBypassPrint
    restrict action Unreleased.TriggerSyncInvoiceBOD
    restrict action Unreleased.Release
    restrict action Unreleased.GroupPricing
    restrict action Unreleased.RemoveHoldCode
    restrict action Released.Delete
    restrict action PrintInvoice
    restrict action GetStatusPrintedBillingInvoiceRegisterIDM
    restrict action GetStatusEditedBillingInvoiceRegisterIDM
    restrict action PutOnHold
    restrict action RemoveHoldCode
    restrict action UpdateParallelReference
    restrict action SendInvoiceToPrinter
    restrict action SendInvoiceToEmail
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        BillingInvoice.InvoicePrefix
                            label is "Invoice"
                        ConditionalInvoiceNumber
                            no label
                        Currency
                            no label
                    TotalGoods
                        label is "GoodsAmount"
                    FreightCharge.TransactionAmount
                        label is "Freight"
                    TotalAddOnAmount
                        label is "Add-OnCharges"
                    GrossAmount
                        label is "InvoiceGross"
                column2
                    Status
                        label is "Status"
                    paragraph
                        TermsDescription1
                            label is "Terms"
                        visible when (IsTermsDescription)
                            TermsDescription2
                                no label
                    OrderDiscount.TransactionAmount
                        label is "Discount"
                    EnteredDiscount.TransactionAmount
                        label is "AdditionalDiscount"
                    InvoiceNetAmount
                        label is "InvoiceNet"
                column3
                    TermsDiscount.TransactionAmount
                        label is "TermsDiscount"
                    TaxableTotal
                        label is "TaxableAmount"
                    TaxTotal.TransactionAmount
                        label is "SalesTax"
                    paragraph
                        CashInAdvance.TransactionAmount
                            label is "DownPayment"
                        CheckNumber
                            label is "Check"
                    ProformaPrepayAmount
                    visible when (ProformaPrepayAmount not entered)
                        InvoiceNetDue
                            label is "NetDue"
                            header4
                            bold
                            italics
                    visible when (ProformaPrepayAmount entered)
                        InvoiceNetPrepayDue
                            label is "NetDue"
                            header4
                            bold
                            italics
