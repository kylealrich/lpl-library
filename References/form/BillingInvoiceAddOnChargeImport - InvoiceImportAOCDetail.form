InvoiceImportAOCDetail is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Miscellaneous
                        label is "AddOnCharge"
                        compact format
                    Miscellaneous.Description
                        no label
                        display as text
                paragraph
                    EnteredPrice
                        label is "FlatAmount"
            column2
                paragraph
                    visible when (LineNumber entered)
                        EnteredUnitPrice
                            label is "UnitPrice"
                paragraph
                    visible when (LineNumber entered)
                        UnitCost
                paragraph
                    Cost
                visible when (LineNumber not entered)
                    paragraph
                        PricePercent
                        CostPercent
            column3
                visible when (LineNumber entered)
                    paragraph
                        PricePercent
                        CostPercent
                paragraph
                    OrderDiscount
                        label is "Discountable"
                paragraph
                    TaxExemptCode
                        label is "TaxExempt"
