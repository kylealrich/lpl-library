EditInvoiceLine is an ActionForm
    action is EditInvoiceLine
    Layout
        two column
            column1
                NewAmount
                visible when (UnitsAmount entered)
                    NewUnitsAmount
                visible when (BillableRate entered)
                    NewBillableRate
                visible when (BuyerTaxCode entered)
                    NewTaxExempt
            column2
                BillableAmount
                    label is "BasisAmount"
                    display as text
                BillingMethod
                    display as text
                blank line
                visible when (DerivedTaxAmount entered)
                    DerivedTaxAmount
                        label is "TaxAmount"
                        display as text
        two column
            column1
                CreatePartial
                    label is "DeferRemainingAmount"
            column2
                HoldRemainder
        single column
            visible when (false)
                ProjectContract
            reason code
                label is "ActionReason"
            action comment
                label is "ActionComment"
