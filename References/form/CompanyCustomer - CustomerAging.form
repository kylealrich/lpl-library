CustomerAging is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.Currency
                        label is "CompanyCurrency"
                    StartDate
                    LastInvoiceDate
                        label is "LastInvoice"
                    LastPaymentDate
                        label is "LastPayment"
                    UnreleasedPayments
                column2
                    ReceivableHoldCode
                    SalesRepresentative.DerivedSalesRepresentativeText
                    CreditAnalyst.CreditAnalystName
                        label is "Analyst"
                    TermsCode.RepresentativeText
                        label is "PaymentTerms"
                    UnappliedPaymentsCredits
                column3
                    Contact
                    CreditLimit
                        label is "CreditLimit"
                    OpenOrderAmount
                        label is "OpenOrders"
                    CurrentPlusBillOfExchangeBalance
                        label is "CurrentBalance"
                    DerivedHighBalance
                        label is "HighBalance"
                column4
                    PhoneNumber
                    visible when (BOEProcessing)
                        BillOfExchangeBalance
                            label is "B\\O\\EBalance"
                    header4 of "InvoicePaymentAverage:"
                    CurrentIPA
                    TwelveMonthPeriodAverage
                        label is "TwelveMonthPeriod"
