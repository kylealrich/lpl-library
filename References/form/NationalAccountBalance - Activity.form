Activity is a Form
    Layout
        display as text
            blank line
            three column distributed
                DerivedLastPaymentDate
                    label is "LastPaymentDate"
                DerivedLastPaymentAmount
                    label is "LastPaymentAmount"
                visible when (CompanyCustomerRel.ReviewCode.Reviewed)
                    CompanyCustomerRel.ReviewDate
                visible when (CompanyCustomerRel.ReviewCode.OpenToReview)
                    CompanyCustomerRel.ReviewDate
            three column distributed
                CompanyCustomerRel.LastInvoiceDate
                    label is "LastInvoiceDate"
                CompanyCustomerRel.LastInvoiceAmount
                visible when (ReviewCode.Reviewed)
                    CompanyCustomerRel.NextReview
            three column distributed
                CompanyCustomerRel.LastStatementDate
                    label is "LastStatementDate"
                CompanyCustomerRel.LastStatementBalance
            three column distributed
                visible when (not CompanyCustomerRel.DunningLetterIndicator)
                    CompanyCustomerRel.LastDunningLetterDate
                        label is "LastDunningLetterDate"
                visible when (CompanyCustomerRel.DunningLetterIndicator)
                    CompanyCustomerRel.LastLetterDate
                        label is "LastDunningLetterDate"
                CompanyCustomerRel.LastDunningLetterAmount
                visible when (not CompanyCustomerRel.DunningLetterIndicator)
                    CompanyCustomerRel.LastDunningLetterNumber
                visible when (CompanyCustomerRel.DunningLetterIndicator)
                    CompanyCustomerRel.LastDunningLetter
                        label is "LastDunningLetterNumber"
            three column distributed
                DerivedDisputedInvoiceAmount
                    label is "DisputeAmount"
                DerivedDisputedInvoices
                    label is "Disputes"
            blank line
        paragraph
