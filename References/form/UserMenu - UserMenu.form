UserMenu is a Form
    is primary
    Layout
        paragraph
            UserMenuName
            Description
            UserMenu
                label is "UserMenuId"
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        three column
            Actor
            UserFolder
                label is "UserFolder"
            UserFolder.Name
                no label
                align as label
                display as text
        single column
            LPL
                use text area of 25 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
