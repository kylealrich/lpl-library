IntercompanyBillingSettlementDetailLineSelectContextForm is a Form
    title is "DistributionSetSelection"
    Layout
        display as text
            four column distributed table
                column1
                    paragraph
                        IntercompanyBillingDocumentHeader
                            label is "BillingDocument"
                            display as text
                        IntercompanyBillingDocumentHeader.Description
                            no label
                            display as text
                            show up to 100 characters
                    PaymentExchangeRate
                        label is "ExchangeRate"
                column2
                    PayableEntity.PayablesInvoice.Invoice
                        label is "Invoice"
                    paragraph
                        PaymentAmount
                            label is "SettlementAmount"
                        IntercompanyBillingSettlementHeader.SettlementCurrency
                            no label
                column3
                    paragraph
                        PayableEntity.PayablesInvoice.InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                        PayableEntity.PayablesInvoice.InvoiceCurrency
                            no label
                    paragraph
                        DocumentPaymentAmount
                            label is "DocumentBase"
                        PayableEntity.PayablesInvoice.InvoiceCurrency
                            no label
                column4
                    paragraph
                        TransientReceivableFundDistributionStatus
                            label is "Receivable"
                            display as tag
                                color of red when (TransientReceivableFundDistributionStatus.OutOfBalance)
                                color of green when (TransientReceivableFundDistributionStatus.ReadyForProcessing)
                                color of green when (TransientReceivableFundDistributionStatus.Processed)
                        DerivedSignedReceivableDistributionSetSumOfLines
                            label is "SelectedSum"
                        DerivedSignedReceivableDifference
                            label is "Difference"
                    paragraph
                        TransientPayablesFundDistributionStatus
                            label is "Payable"
                            display as tag
                                color of red when (TransientPayablesFundDistributionStatus.OutOfBalance)
                                color of green when (TransientPayablesFundDistributionStatus.ReadyForProcessing)
                                color of green when (TransientPayablesFundDistributionStatus.Processed)
                        DerivedPayableDistributionSetSumOfLines
                            label is "SelectedSum"
                        DerivedPayableDifference
                            label is "Difference"
        visible when (false)
            TransientDocumentHeaderForContext
            TransientSettlementIDForContext
            TransientFundDistributionSetState
