ManageItemProposalFromSupplier is a CompositeForm
    title is "ItemProposal<DerivedRecallNotice>"
    called out actions only
    context form is ItemProposalContext
        background is theme color
    Actions
        action is Pending.SubmitItemProposal
            label is "Submit"
            hide when invalid
        action is save
            label is "_"
    Proposal is a Panel
        form is ItemProposalRecallNotice
    ItemAttachmentWorksheet is a Panel
        visible when (DisplayAttachmentWorksheetList)
        mouse over text is "AttachListOfProposedItems"
        panel header is "AttachListOfProposedItems"
        form is ProposedItemsSpreadsheetForm
    ItemInformation is a Panel
        visible when (DisplayItemDetailsOnForm)
        list is RecallProduct set.PortalRecallItemProposals
    Attachments is a Panel
        visible when (ProposedItem.ProposedNotSubmitted)
        list is RecallNoticeReference set.ItemProposalReference
    Attachments2 is a Panel
        title is "Attachments"
        visible when (not ProposedItem.ProposedNotSubmitted)
        list is RecallNoticeReference set.PortalSummaryRecallReferences
