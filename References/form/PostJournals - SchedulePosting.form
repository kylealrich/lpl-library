SchedulePosting is a Form
    is primary
    Layout
        single column
            AccountingEntityOption
                label is "<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>Option"
            visible when (AccountingEntityOption.Single)
                AccountingEntity
                    label is "<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>"
            visible when (AccountingEntityOption.Group)
                AccountingEntityGroup
                    label is "<actor.context.FinanceEnterpriseGroup.AccountingEntityLabel>Group"
            Ledger
                select is WithoutCloseLedgerList
            System
        blank line
        single column
            PeriodOption
        visible when (PeriodOption.SpecifyPeriod)
            two column
                Period
                    select is ClosePeriods
                Period.Date
                    no label
                    display as text
        visible when (AccountingEntityOption.Single)
            single column
                PostThroughDate
        visible when (AccountingEntityOption.Group)
            single column
                PostThroughDate
