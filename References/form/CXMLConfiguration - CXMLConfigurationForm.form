CXMLConfigurationForm is a Form
    is primary
    title is "\\e\\ProcurementConfiguration"
    Layout
        paragraph
            FinanceEnterpriseGroup
            FinanceEnterpriseGroup.EnterpriseGroup.Description
                no label
                display as text
            Default
        header2 of "AribaNetworkConfiguration"
        paragraph
            InvoiceAutoReject
            InvoiceAttachment
            IgnoreFirstAttachment
            PaymentProposal
            PaymentRemittance
        header2 of "GeneralSettings"
        paragraph
            FormatOrderID
        header2 of "NotificationSettings"
        paragraph
            NotificationType
            visible when (NotificationType.Email)
                NotificationLevel
                ToNotificationEmail
                FromNotificationEmail
            visible when (NotificationType.User)
                NotificationLevel
            visible when (NotificationType.Both)
                NotificationLevel
                ToNotificationEmail
                FromNotificationEmail
