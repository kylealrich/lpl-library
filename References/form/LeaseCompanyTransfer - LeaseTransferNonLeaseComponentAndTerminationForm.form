LeaseTransferNonLeaseComponentAndTerminationForm is a Form
    title is "NonLeaseComponentAndTerminationDetailsForm"
    Layout
        header3 of "NonLeaseComponentDetails"
        blank line
        single column
            ToExecutoryCostCode
                label is "Component"
                display as text
            ToExecutoryCostCode.Description
                label is "Description"
            ToExecutoryAccount
                label is "Account"
                compact format
            ToVariableCost
                label is "VariableCost"
            ToCombineWithLeasePayment
                label is "CombineWithLeasePayment"
                display as text
            ToDoNotCreateAPInvoice
                label is "DoNotCreateAPInvoice"
        blank line
        header3 of "TerminationNonLeaseComponent"
        single column
            paragraph
                ToTerminationNonLeaseComponent
                    label is "TerminationNonLeaseComponent"
                ToTerminationNonLeaseComponent.Description
                    no label
                    display as text
            ToTerminationFee
                label is "TerminationFee"
            paragraph
                ToTerminationGainLossAccount
                    label is "TerminationGainLossAccount"
                    compact format
                ToTerminationGainLossAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
