CreateRequiredComponent is an ActionForm
    action is CreateRequiredComponent
    Layout
        paragraph
            KitComponent.ComponentSequence
                label is "Sequence"
                display as text
        paragraph
            ComponentItem
                label is "Component"
            ComponentItem.Description
                no label
                display as text
            ComponentItem.Description2
                no label
                display as text
        valid when (KitItem.MakeCode.MakeToStock)
            paragraph
                InvLocation
                InvLocation.Name
                    no label
                    display as text
        single column
            Quantity
        paragraph
            StartDate
            StopDate
        visible when (IsMakeToStockKitAndUseIncomeStatementAccounts)
            paragraph
                MaterialExpenseAccount
                    label is "MaterialExpenseAccount"
                    compact format
