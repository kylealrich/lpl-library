MobileMainPOReceiving is a Form
    title is "Main"
    Layout
        single column
            Company.DerivedCompanyNameID
                label is "Company"
                display as text
        two column distributed
            PORelease
                display as text
            POCode
                display as text
        single column
            ShipToLocation
                select is MobileInventoryLocations
            visible when (ShipToLocation entered)
                ShipToLocation.Name
                    label is "LocationName"
                    display as text
            ReferenceNumber
                label is "Reference"
