SCInvoiceSubmitForm is a Form
    title is "SubmitInvoice"
    Actions
        action is save and close
    Layout
        display as text
            paragraph
                Company
                Company.Name
                    no label
                    display as text
            single column
                Invoice
            single column
                visible when (TaxAmount entered)
                    paragraph
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmountIncludingTax"
                        TaxAmount
                visible when (TaxAmount not entered)
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
            paragraph
                visible when (MatchProcessType.ReceiptMatch)
                    DetailExtendedAmount
                        label is "DetailLineTotals"
                visible when (AddOnChargeAmountEntered)
                    AddOnChargeAmount
                        label is "AddOnChargesFromPO"
                visible when (MatchProcessType.ServiceContract)
                    DetailExtendedAmount
                        label is "DetailTotals"
                visible when (HasSupplierAddOnCharges)
                    DerivedSupplierAdhocAOCAmount
                        label is "SupplierEnteredAddOnCharges"
                visible when (TaxAmount entered)
                    TaxAmount
                visible when (SupplierAOCAtSomeLevel)
                    AddOnChargePlusLineDetails
                        label is "EnteredTotals"
        single column
            text of "<CreateBySupplierDerivedSubmitMessage>"
                bold
            button of "Submit"
                valid when (CreateBySupplierAvailableForSubmittal)
                action is Unreleased.CreateBySupplierSubmitInvoice
            text of "ClickTheLinkBelowToViewTheInvoice"
                bold
            button of "ViewInvoice"
                link is SCViewInvoice
                display as link
            text of "TheInvoiceCanAlsoBeViewedAnyTimeInManageSelfCreatedInvoices"
                italics
