Traceability is a Form
    title is "Traceability"
    disable all actions
    Layout
        button of "RunDataTraceability"
            action is RunTraceability
        button of "ScheduleDataTraceability"
            action is ScheduleTraceability
        single column
            last DataTraceabilityWorkunitsRel.ExecutionStartDate
                label is "LastUpdate"
            last DataTraceabilityWorkunitsRel.Status
                label is "Status"
                raise red alert when (last DataTraceabilityWorkunitsRel.IsFailed)
                raise yellow alert when (last DataTraceabilityWorkunitsRel.IsCanceled)
                raise blue alert when (last DataTraceabilityWorkunitsRel.IsActionPendingOrActionPendingInServer)
                    mouse over text is "ActionPending"
            button of "<last DataTraceabilityWorkunitsRel.PfiWorkunit>"
                valid when (AnalyticsConsoleConfigurationsRel.IsTraceabilityWorkunitExists)
                link is DataTraceabilityWorkunitNav
                label is "WorkUnit"
                display as link
