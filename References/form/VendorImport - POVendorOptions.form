POVendorOptions is a Form
    Layout
        visible when (not HasLocation)
            single column
                AllowChangeToPunchoutPurchaseOrder
        three column
            column1
                PovReturnMaterialAuthorizationRequired
                    label is "ReturnMaterialAuthorizationRequired"
                PovGTINInUse
                    label is "GTINInUse"
            column2
                PovReturnMaterialAuthorizationDocumentRequired
                    label is "ReturnMaterialAuthorizationDocumentRequired"
                UpdateItemFromGTIN
                    label is "UpdateItemFromGTIN"
            column3
                PovMixContractsOnPurchaseOrder
                    label is "MixContractsOnPurchaseOrder"
                PovRequisitionLocation
                    label is "LocationControl"
                    show up to 30 characters
        header2 of "Terms"
        two column
            column1
                paragraph
                    PovFreightTerm
                        label is "FreightTerm"
                    PovFreightTerm.Description
                        no label
                        display as text
            column2
                paragraph
                    PovFobCode
                        label is "ShipTerm"
                    PovFobCode.Description
                        no label
                        display as text
        header2 of "Delivery"
        two column
            column1
                PovLeadtime
                    label is "LeadtimeDays"
                paragraph
                    PovShipVia
                        label is "P\\OShipVia\\,UnloadingPort"
                    UnloadingPort
                        no label
            column2
                PovNormalDelivery
                    label is "NormalDeliveryDay"
                paragraph
                    PovOverShipVia
                        label is "ReturnShipVia\\,LoadingPort"
                    LoadingPort
                        no label
        header2 of "ReorderDays"
        paragraph
            ReorderOnSunday
                label is "Sunday"
            ReorderOnMonday
                label is "Monday"
            ReorderOnTuesday
                label is "Tuesday"
            ReorderOnWednesday
                label is "Wednesday"
            ReorderOnThursday
                label is "Thursday"
            ReorderOnFriday
                label is "Friday"
            ReorderOnSaturday
                label is "Saturday"
