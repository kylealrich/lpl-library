CreateReceivableReasonForm is an ActionForm
    action is Create
    title is "ReceivableReason"
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            ActiveReceivableReasonType
                label is "ReceivableReasonType"
                display as required
        visible when (not IsMarkAsPaidType)
            paragraph
                ReceivableReason
                    display as required
                Description
        visible when (IsMarkAsPaidType)
            paragraph
                ReceivableReason
                Description
                    display as text
            single column
                ReceivableAdjustmentReasonType
                    display as text
                Active
                    display as text
        visible when (ActiveReceivableReasonType.MemoEntry)
            single column
                Active
        visible when (ActiveReceivableReasonType.CashApplicationAdjustment)
            paragraph
                SelectableReceivableAdjustmentReasonType
                    label is "ReceivableAdjustmentReasonType"
                    display as required
                visible when (SelectableReceivableAdjustmentReasonType.Chargeback)
                    DistributionAccount
                        label is "Account"
                        compact format
                visible when (SelectableReceivableAdjustmentReasonType.Discount)
                    DistributionAccount
                        label is "Account"
                        compact format
                visible when (SelectableReceivableAdjustmentReasonType.OverShort)
                    DistributionAccount
                        label is "Account"
                        compact format
                visible when (SelectableReceivableAdjustmentReasonType.TaxWithholding)
                    DistributionAccount
                        label is "Account"
                        compact format
            paragraph
                ReceivableInvoiceDisputeCode
            paragraph
                Active
        visible when (SelectableReceivableAdjustmentReasonType.Chargeback)
            blank line
            text of "Chargebacks:"
                bold
            paragraph
                ChargebackType
            paragraph
                ChargebackAccount
                    compact format
            paragraph
                ChargebackDisputeCode
        visible when (ActiveReceivableReasonType.CashApplicationAdjustment)
            blank line
            visible when (SelectableReceivableAdjustmentReasonType.Chargeback)
                single column
                    Review
                        label is "Review"
                    visible when (Review.ConditionalReviewRequired)
                        AdjustmentAmountReviewLimit
                        AdjustmentAmountReviewPercent
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            ApprovalCode
                                select is ApprovalCodesWithLevels
                                show up to 10 characters
                                display as required
                            ApprovalCode.Description
                                no label
                                display as text
                    RejectAdjustmentReasonCodeRequired
                    AttachmentRequired
                blank line
                paragraph
                    AccountingUnitOverrideFlag
                paragraph
                    AccrualAccount
                        compact format
            visible when (SelectableReceivableAdjustmentReasonType.Discount)
                single column
                    Review
                        label is "Review"
                    visible when (Review.ConditionalReviewRequired)
                        AdjustmentAmountReviewLimit
                        AdjustmentAmountReviewPercent
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            ApprovalCode
                                select is ApprovalCodesWithLevels
                                show up to 10 characters
                                display as required
                            ApprovalCode.Description
                                no label
                                display as text
                    RejectAdjustmentReasonCodeRequired
                    AttachmentRequired
                blank line
                paragraph
                    AccountingUnitOverrideFlag
                paragraph
                    AccrualAccount
                        compact format
            visible when (SelectableReceivableAdjustmentReasonType.OverShort)
                single column
                    Review
                        label is "Review"
                    visible when (Review.ConditionalReviewRequired)
                        AdjustmentAmountReviewLimit
                        AdjustmentAmountReviewPercent
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            ApprovalCode
                                select is ApprovalCodesWithLevels
                                show up to 10 characters
                                display as required
                            ApprovalCode.Description
                                no label
                                display as text
                    RejectAdjustmentReasonCodeRequired
                    AttachmentRequired
                blank line
                paragraph
                    AccountingUnitOverrideFlag
                paragraph
                    AccrualAccount
                        compact format
            visible when (SelectableReceivableAdjustmentReasonType.TaxWithholding)
                single column
                    Review
                        label is "Review"
                    visible when (Review.ConditionalReviewRequired)
                        AdjustmentAmountReviewLimit
                        AdjustmentAmountReviewPercent
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            ApprovalCode
                                select is ApprovalCodesWithLevels
                                show up to 10 characters
                                display as required
                            ApprovalCode.Description
                                no label
                                display as text
                    RejectAdjustmentReasonCodeRequired
