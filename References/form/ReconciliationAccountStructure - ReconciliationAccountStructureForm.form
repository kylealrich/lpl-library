ReconciliationAccountStructureForm is a Form
    is primary
    title is "Structure"
    Layout
        single column
            ReconciliationAccountStructure
            Description
            ReconciliationType
        visible when (ReconciliationType.Account)
            paragraph
                ReconciliationLevel
                    select is ReconciliationStructureRowDimensionSelectList
                ReconciliationLevel.DisplayLabel
                    no label
                    display as text
            paragraph
                ReconciliationCurrency
                DerivedReconciliationCurrency
                    no label
                    display as text
        paragraph
            ReportingBasis
            ReportingBasis.Description
                no label
                display as text
        single column
            Active
