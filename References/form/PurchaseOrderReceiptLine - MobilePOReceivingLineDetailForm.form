MobilePOReceivingLineDetailForm is a CompositeForm
    title is "ReceiptLineDetails"
    context form is MobilePOReceivingLineDetailContext
        background is theme color
    restrict action PopulateMissingUOM
    restrict action MobileUpdateReceiptLine
    Actions
        action is save
            label is "_"
            hide when invalid
    Detail is a Panel
        form is MobileReceiverLineSummary
    Source is a Panel
        visible when (IsFromRequisition)
        list is PurchaseOrderLineSourcesRel.MobilePurchaseOrderLineSources
    Safety is a Panel
        form is PO304Safety
    InvoiceAddOnCost is a Panel
        visible when (PurchaseOrderReceipt.DisplayInvoiceAOCHdr)
        list is ReceiptLineAOCsRel.MobilePurchaseOrderReceiptLineAOCList
    VendorItem is a Panel
        form is MobilePO304VendorItem
    ReceivingDetails is a Panel
        title is "<ReceivingDetailLabel>"
        visible when (IsInventoryBinLotSerialTracked)
        list is PurchaseOrderTransactionDetailsRel.MobileAdditionalReceivingEntries
    UDIDetails is a Panel
        visible when (IsUDIRequiredAtReceipt)
        list is PurchaseOrderUDIDetailsRel.MobileUDIEntrys
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is PurchaseOrderReceiptLineCommentRel.MobilePurchaseOrderReceiptLineCommentList
