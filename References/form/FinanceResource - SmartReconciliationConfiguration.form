SmartReconciliationConfiguration is a Form
    Actions
        action is save
        action is refresh
    Layout
        display as text
            paragraph
                FinanceResource
                    label is "UserId"
                EmployeeRel.Name.PreferredFirstAndLastName
                    no label
        header2 of "Preferences"
        two column
            column1
                MatchPreference
                InvoicePreference
            column2
                DisplayOnly
                RestrictChargebacks
                RestrictMatchedNotReceived
        header2 of "Assignments"
        two column
            column1
                text of "CompanyGroups"
                    bold
                text of "Companies"
                    bold
                text of "Vendors"
                    bold
                text of "VendorClasses"
                    bold
                text of "VendorNameRanges"
                    bold
            column2
                button of "<DerivedSmartReconciliationCompanyGroups>"
                    link is SmartReconCompanyGroupsNav
                    display as link
                button of "<DerivedSmartReconciliationCompanies>"
                    link is SmartReconCompaniesNav
                    display as link
                button of "<DerivedSmartReconciliationVendors>"
                    link is SmartReconVendorsNav
                    display as link
                button of "<DerivedSmartReconciliationVendorClasses>"
                    link is SmartReconVendorClassesNav
                    display as link
                button of "<DerivedSmartReconciliationVendorRanges>"
                    link is SmartReconVendorRangesNav
                    display as link
