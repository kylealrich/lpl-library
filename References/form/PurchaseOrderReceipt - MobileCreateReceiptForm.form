MobileCreateReceiptForm is a Form
    title is "Receipt"
    Layout
        two column distributed
            column1
                Company
                    select is MobilePurchasingCompanyList
                    show up to 10 characters
            column2
                PurchaseOrder
                    select is MobileReleasedPurchaseOrderSelect
                    show up to 10 characters
        single column
            ReceivedDate
                label is "Date\\,TimeReceived"
            visible when (PurchaseOrderReceipt not entered)
                TransientReceiveAll
                    label is "<PurchaseOrder.ReceiveAllLine>_<PurchaseOrder.DisplayLineCount>"
            visible when (PurchaseOrderReceipt entered)
                TransientReceiveAll
                    label is "<PurchaseOrder.ReceiveAllLine>_<PurchaseOrder.DisplayLineCount>"
                    display only
            ReferenceNumber
                show up to 10 characters
        two column distributed
            column1
                ShipToLocation
                    label is "ReceivedLocation"
                    show up to 10 characters
                TransientBillOfLading
                    show up to 10 characters
                PackageTrackingNumber
                    show up to 10 characters
                visible when (PurchaseOrder.Vendor entered)
                    PurchaseOrder.Vendor.RepresentativeText
                        label is "Vendor"
                        display as text
            column2
                Carrier
                    show up to 10 characters
                PurchaseOrder.FreightTerm.Description
                    label is "FreightTerms"
                    display as text
                    show up to 10 characters
                PackageTrackingLabel
                    show up to 10 characters
                ReprintReceipt
                visible when (PurchaseOrder.Vendor entered)
                    PurchaseOrder.DerivedPurchaseFromLocationRepresentativeText
                        label is "Location"
                        display as text
                        show up to 10 characters
        visible when (PurchaseOrder entered)
            header3 of "BuyerDetails"
            two column
                column1
                    PurchaseOrder.BuyerEmployeeRel.ResourcePicture.File
                        display as portrait image up to 3 lines
                            missing image is random background
                column2
                    blank line
                    PurchaseOrder.BuyerEmployeeRel.FirstLastName
                        no label
                        header4
                        color of blue
                        display as text
            display as text
                single column
                    visible when (PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddress entered)
                        paragraph
                            button of icon.mail
                            button of "<PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddress>"
                                link is "mailto:<PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddress>"
                                display as link
                    visible when (PurchaseOrder.BuyerEmployeeRel.EmployeeWorkTelephone entered)
                        paragraph
                            button of icon.mobile
                            button of "<PurchaseOrder.BuyerEmployeeRel.EmployeeWorkTelephone>"
                                link is "tel:<PurchaseOrder.BuyerEmployeeRel.EmployeeWorkTelephone>"
                                display as link
