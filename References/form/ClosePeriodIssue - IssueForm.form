IssueForm is a Form
    is primary
    title is "IssueDetails"
    Layout
        three column distributed
            column1
                paragraph
                    CreatedBy.FirstAndLastName
                        label is "CreatedBy"
                        display as text
                        show up to 15 characters
                    DateCreated
                        display as text
            column2
                paragraph
                    UpdatedBy.FirstAndLastName
                        label is "UpdatedBy"
                        display as text
                        show up to 15 characters
                    DateUpdated
                        label is "DateUpdated"
                        display as text
            column3
                paragraph
                    ResolvedBy.FirstAndLastName
                        label is "ResolvedBy"
                        display as text
                    DateResolved
                        label is "DateResolved"
                        display as text
        text of "_"
        single column
            Summary
                display only
            Description
                display only
            Status
                label is "IssueStatus"
            visible when (Status.Resolved)
                Resolution
                    display as required
        header2 of "AssignIssue"
        two column distributed
            column1
                paragraph
                    FinanceTeam
                        label is "Team"
                        display only
                        select is FinanceTeamSelect
                    FinanceTeam.Description
                        no label
                        display as text
            column2
                paragraph
                    TaskIssueOwner
                        label is "PersonResponsible"
                        display only
                        compact format
                        select is FinanceTeamMemberActiveSelect
                    TaskIssueOwner.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                        label is "_"
                        display as text
