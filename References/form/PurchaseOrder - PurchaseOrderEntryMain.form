PurchaseOrderEntryMain is a Form
    Layout
        visible when (not PurchaseOrderExists)
            two column distributed
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                visible when (Company.HasManualPORange)
                    PurchaseOrder
        two column distributed
            paragraph
                Buyer
                Buyer.Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
                visible when (PurchaseOrderExists)
                    button of icon.profile
                        link is BuyerNav
                    button of icon.mail
                        visible when (Buyer.Employee.EmployeeWorkEmailAddressExists)
                        link is "mailto:<Buyer.Employee.EmployeeWorkEmailAddress>"
                    button of icon.phone
                        visible when (Buyer.Employee.EmployeeWorkPhoneExists)
                        link is "tel:<Buyer.Employee.EmployeeWorkTelephone>"
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
        two column distributed
            paragraph
                PurchaseFromLocation
                    label is "PurchaseFrom"
                    select is NonRemitToActivePurchaseFromLocations
                PurchaseFromLocation.VendorName
                    no label
                    display as text
            paragraph
                ShipToLocation
                    label is "ShipTo"
                ShipToLocationName
                    no label
                    display as text
        two column distributed
            PurchaseOrderDate
            paragraph
                DefaultDeliveryDate
                    label is "DeliveryDate"
                DeliveryMethod
        two column distributed
            Reference1
            Reference2
        paragraph
            visible when (HasPORelease)
                PORelease
                    display as text
            visible when (InterfacedPurchaseOrderExists)
                POCode
                    display as text
            visible when (not InterfacedPurchaseOrderExists)
                paragraph
                    POCode
                    POCode.Description
                        no label
                        display as text
            visible when (FromBlanketOrStanding)
                visible when (FromBlanket)
                    BlanketOrStandingContract
                        label is "FromBlanketContract"
                        display as text
                visible when (FromStanding)
                    BlanketOrStandingContract
                        label is "FromStandingContract"
                        display as text
            visible when (FromProcurementTemplate)
                ProcurementTemplate
                    label is "FromProcurementTemplate"
                    display as text
