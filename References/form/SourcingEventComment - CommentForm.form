CommentForm is a Form
    is primary
    title is "SourcingEventComment"
    Layout
        two column
            SourcingEvent.EventVersionString
                label is "Event#"
                display as text
            SourcingEvent.Name
                label is "EventName"
                display as text
        two column
            SourcingEvent.Buyer
                display as text
            SourcingEvent.Buyer.Employee.PresentationNameSnapshot
                label is "BuyerName"
                display as text
        single column
            Title
            Type
            SupplierCanView
            Comment
                use text area
            visible when (EligibleForCM)
                CMComment
                    label is "SendCommentToContractManagement"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
