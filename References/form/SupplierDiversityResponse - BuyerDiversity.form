BuyerDiversity is a Form
    is primary
    title is "DiversityCode"
    Actions
        action is Create
        action is save
        action is save and new
        action is save and close
    Layout
        display as text
            paragraph
                SupplierGroup
                SupplierGroup.Description
            paragraph
                Supplier
                Supplier.SupplierName
        paragraph
            PayablesDiversityCode
                label is "DiversityCode"
            PayablesDiversityCode.Description
                label is "DiversityDescription"
                display as text
        three column
            EffectiveDate
            ExpirationDate
            ReviewDate
        visible when (ExpirationDateEntered)
            paragraph
                Alerts.YellowAlert
                text of "DaysBeforeTheDiversityExpirationDate"
                Alerts.RedAlert
                text of "DaysBeforeTheDiversityExpirationDate"
        paragraph
            CertificationComplete
            Active
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
