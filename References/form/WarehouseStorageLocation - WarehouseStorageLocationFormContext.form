WarehouseStorageLocationFormContext is a Form
    Layout
        visible when (not RecordExists)
            three column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        WarehouseStorageLocation
                column2
                    paragraph
                        InventoryLocation
                            show up to 5 characters
                        InventoryLocation.Name
                            no label
                            display as text
                    paragraph
                        Name
                column3
                    paragraph
                        StorageLocationType
                    paragraph
                        Active
        visible when (RecordExists)
            three column distributed
                column1
                    paragraph
                        Company.DerivedCompanyDisplay
                            label is "Company"
                            display as text
                    paragraph
                        WarehouseStorageLocation
                            display as text
                column2
                    paragraph
                        InventoryLocation.DerivedInventoryLocationIDName
                            label is "Inventory_Location"
                            display as text
                    paragraph
                        Name
                column3
                    paragraph
                        StorageLocationType
                    paragraph
                        Active
