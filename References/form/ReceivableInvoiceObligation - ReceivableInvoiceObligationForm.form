ReceivableInvoiceObligationForm is a Form
    is primary
    title is "ReceivableInvoiceObligations"
    Layout
        three column distributed
            column1
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                        display as text
                paragraph
                    ReceivableInvoice.OriginalCurrency
                        display as text
                paragraph
                    ReceivableInvoice
                        label is "Transaction"
                        display as text
                paragraph
                    TransactionAmount
            column2
                paragraph
                    Company.Currency
                        label is "Currency"
                        display as text
                paragraph
                    ReceivableProcessLevel.RepresentativeText
                        display as text
                paragraph
                    ReceivableInvoice.OpenReceivableInvoiceAmount
                        label is "OpenAmount"
                        display as text
                paragraph
                    DueDate
            column3
                paragraph
                    BatchNumber
                        label is "InvoiceBatch"
                        display as text
                paragraph
                    ReceivableInvoice.Status
                        display as tag
                            color of gray when (ReceivableInvoice.Status.Unreleased)
                            color of green
                paragraph
                    ReceivableInvoiceType
                        label is "Type"
                        display as text
