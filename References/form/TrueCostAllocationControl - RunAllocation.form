RunAllocation is an ActionForm
    action is Run
    title is "True\\CostAllocationControl"
    Layout
        two column
            column1
                header3 of "RunOptions"
                PrmRunName
                PrmDescription
                PrmAllocation
                PrmGroup
                PrmMultiMonthFlag
                visible when (not PrmMultiMonthFlag)
                    PrmDate
                visible when (PrmMultiMonthFlag)
                    PrmRunStartDate
                    PrmRunEndDate
                PrmFromStep
                PrmToStep
                single column
                header3 of "UseLedgers"
                PrmUseActualLedger
                    label is "<ActualsLedger.Ledger>"
                visible when (CapacityLedger entered)
                    PrmUseCapacityLedger
                        label is "<CapacityLedger.Ledger>"
            column2
                header3 of "ReportOptions"
                PrmGenerateListingData
                visible when (PrmGenerateListingData)
                    PrmGenerateSourceValue
