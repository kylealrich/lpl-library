CreateDisbursementContextForm is a Form
    title is "Disbursement"
    Layout
        five column table
            column1
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivityBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                        initial value is StudentActivitySchool.DefaultBankAccount
                paragraph
                    BankTransactionType
                        label is "TransactionType"
                        display as text
                        initial value is 30
                paragraph
                    TransactionAmount
                        label is "Amount"
                paragraph
                    SchoolAccountCode
                        compact format
                        select is DisbursementAccountCodeList
            column2
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    StudentActivityBankAccount.Description
                        no label
                        display as text
                paragraph
                    visible when (StudentActivityBankAccount not entered)
                        CurrentDisbursementNumber
                            label is "TransactionNumber"
                            display as text
                    visible when (StudentActivityBankAccount entered)
                        visible when (StudentActivityBankAccount.AutoNumberDisbursements)
                            CurrentDisbursementNumber
                                label is "TransactionNumber"
                                display as text
                            AutoDisbursementMessage
                                no label
                                display as text
                        visible when (not StudentActivityBankAccount.AutoNumberDisbursements)
                            StudentActivityBankTransaction
                                label is "TransactionNumber"
                                select is BankTransactions
                paragraph
                    AmountType
                        display as text
                        initial value is 2
                paragraph
                    SchoolAccountCode.StudentActivityAccountCode.Description
                        no label
                        display as text
            column3
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                blank line
                paragraph
                    TransactionDate
                paragraph
                    Description
            column4
                blank line
                blank line
                paragraph
                    Status
                        display as text
            column5
                blank line
                blank line
                visible when (ReleasedCheckRecord)
                    paragraph
                        CheckStatus
                            no label
                            display as text
        visible when (Status.Entered)
            header3 of "DetailInformation"
            visible when (not TransactionExists)
                paragraph
                    SchoolActivityAccount
                        label is "Activity"
                        compact format
                        select is SchoolActivityAccountSelectList
                    SchoolActivityAccount.Description
                        no label
                        display as text
                paragraph
                    ActivityDetailAmount
                        label is "Amount"
            visible when (TransactionExists)
                TotalDetailAmount
                visible when (OutOfBalance)
                    OutOfBalanceAmount
