TriggerRunStatusForm is a Form
    title is "TriggerStatus"
    Layout
        visible when (Status.Finished)
            single column
                text of "TriggerHasCompleted."
                    color of green
                Result
                    display only
                    use text area
        visible when (not Status.Finished)
            header4 of "TriggerRunStatus"
            single column
                visible when (AsyncActionRequest.ActionIsBlacklisted)
                    text of untranslatable:"<AsyncActionRequest.BlocklistMessage>"
                        bold
                        color of red
                visible when (IsErrorStateNotPendingRunAfter)
                    visible when (IsInfoStateTerminationRequested)
                        text of "TriggerTerminationWasManuallyRequested.YouCanRequeueTheTriggerToRetry."
                            color of yellow
                    visible when (IsInfoStateTerminationSystemRequested)
                        text of "TriggerTerminationRequestedSystemRequested.YouCanRequeueTheTriggerToRetry."
                            color of yellow
                    visible when (not IsInfoStateTerminationRequested)
                        visible when (not IsInfoStateTerminationSystemRequested)
                            visible when (not AsyncActionRequest.ActionIsBlacklisted)
                                text of "TriggerIsInAnErrorState.InterventionMayBeRequired.YouCanRequeueTheTriggerToTryAndRecover."
                                    color of red
                    visible when (AdditionalInformationEntered)
                        AdditionalInfo
                            display only
                    ErrorMessage
                        label is untranslatable:"<ErrorMessage label>"
                        display only
                        use text area
                visible when (IsErrorStatePendingRunAfter)
                    text of untranslatable:"<RunAfterMessage>"
                visible when (Status.InProgress)
                    visible when (IsTriggerAllocated)
                        text of "TriggerIsRunning."
                            color of green
                    visible when (not IsTriggerAllocated)
                        text of "TriggerIsMarkedAsRunningButIsNotAllocatedInAsync.SeeBelowForPossibleCauses."
                            color of red
                visible when (IsWarningState)
                    text of untranslatable:"<WarningStateMessage>."
                        color of yellow
                visible when (Status.PendingStart)
                    text of "TriggerShouldStartShortly.IfNot,SeeBelowForPossibleCauses."
                visible when (Status.Queued)
                    visible when (not AsyncActionRequest.AnyTypeUpgradeRequest)
                        visible when (AsyncActionRequest.UnfinishedSystemUpgradeDataAreaRequestsRelExists)
                            text of "ActionCannotRunUntilSystemDataAreaUpgradeRequestsComplete."
                                bold
                                color of red
                        visible when (AsyncActionRequest.UnfinishedSystemUpgradeSystemRequestsRelExists)
                            text of "ActionCannotRunUntilSystemUpgradeRequestsComplete."
                                bold
                                color of red
                    visible when (AsyncQueueDefinition.IsSuspended)
                        text of untranslatable:"<AsyncQueueDefinition.SuspendedMessageWithPeriod>"
                            bold
                            color of red
                    visible when (AsyncQueueDefinition.AtQueueMax)
                        text of "QueueIsCurrentlyExecutingAtQueueMaximum."
                            bold
                            color of red
                    visible when (AsyncQueueDefinition.AtQueueGroupMax)
                        text of "QueueGroupIsCurrentlyExecutingAtQueueGroupMaximum."
                            bold
                            color of red
                visible when (IsQueuedOrPending)
                    visible when (AsyncActionRequest.DerivedAsyncStatusMT)
                        visible when (not AsyncActionRequest.DerivedAsyncStatusMTRunning)
                            text of "Multi-tenantAsyncProcessorIsNotRunning."
                                bold
                                color of red
                    visible when (AsyncActionRequest.DerivedAsyncStatusTenantStateNotRunning)
                        text of "TenantAsyncProcessorIsNotRunning."
                            bold
                            color of red
                    visible when (AsyncActionRequest.DerivedAsyncStatusTenantStateRunning)
                        visible when (AsyncActionRequest.DerivedAsyncStatusTenantWarn)
                            text of "TenantAsyncProcessorIsRunning:<AsyncActionRequest.DerivedAsyncStatusTenantMessage>."
                                color of yellow
                    visible when (AsyncActionRequest.DerivedAsyncStatusTenantStateSuspended)
                        text of "TenantAsyncProcessorIsSuspended."
                            bold
                            color of red
                    visible when (AsyncActionRequest.DerivedAsyncStatusTenantStateError)
                        text of "TenantAsyncProcessorIsInError."
                            bold
                            color of red
                    visible when (not AsyncActionRequest.DerivedAsyncStatusTenantStateNotRunning)
                        visible when (AsyncActionRequest.DerivedAsyncStatusDataAreaNotRunning)
                            text of "DataAreaIsNotRunning."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusDataAreaSuspended)
                            text of "DataAreaProcessorIsSuspended."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusDataAreaError)
                            text of "DataAreaIsInError."
                                bold
                                color of red
                        visible when (AsyncActionRequest.RequestThresholdExceeded)
                            text of "CurrentlyRunningActionCountMeetsOrExceedsMaximumAllowed."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusProcReqsNotRunning)
                            text of "ProcessRequestsSweepIsNotRunning."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusProcReqsSuspended)
                            text of "ProcessRequestsSweepIsSuspended."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusProcReqsError)
                            text of "ProcessRequestsSweepIsInError."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusProcQueuesNotRunning)
                            text of "ProcessQueuesSweepIsNotRunning."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusProcQueuesSuspended)
                            text of "ProcessQueuesSweepIsSuspended."
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusProcQueuesError)
                            text of "ProcessQueuesSweepIsInError."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusConsCheckNotRunning)
                            text of "ConsistencySweepIsNotRunning."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusConsCheckSuspended)
                            text of "ConsistencySweepIsSuspended."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusConsCheckError)
                            text of "ConsistencySweepIsInError."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusBatchNotRunning)
                            text of "BatchExecutorNodeIsNotRunning."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusBatchError)
                            text of "BatchExecutorNodeIsInError."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusDocumentNotRunning)
                            text of "DocumentExecutorNodeIsNotRunning."
                                bold
                                color of red
                        visible when (AsyncActionRequest.DerivedAsyncStatusDocumentError)
                            text of "DocumentExecutorNodeIsInError."
                                bold
                                color of red
