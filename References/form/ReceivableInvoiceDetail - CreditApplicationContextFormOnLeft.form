CreditApplicationContextFormOnLeft is a CompositeForm
    title is "CreditApplication<InvoiceNumberTitle>"
    context form is CreditApplicationContextFormShowContextFormOnLeft
        show context form on left
        background is theme color
    Actions
        action is UpdateApplicationGeneralLedgerDates
            action icon is edit
            label is "UpdateGlobalLedgerDates"
            hide when invalid
        navigation is CreditApplicationFormOnTopNav
            action icon is preview
        action is previous record
            label is "_"
        action is next record
            label is "_"
    InvoiceApplicationNA is a Panel
        visible when (not CompanyCustomerRel.NationalAccountIndicator.No)
        list is DebitTransactionsForNationalAccountRel.CreditApplicationList
    InvoiceApplication is a Panel
        list is DebitTransactionsForCustomerRel.CreditApplicationList
    PriorApplications is a Panel
        visible when (CreditMemoHasApplications)
        list is CreditMemoReceivableApplicationRel.ReviewCreditMemoApplications
    PriorWriteOffs is a Panel
        visible when (HasReceivableApplicationAdjustments)
        list is ReceivableApplicationAdjustmentRel.ReviewReceivableApplicationAdjustmentList
