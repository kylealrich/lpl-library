AddDetailLevelAction is an ActionForm
    action is CreateTask
    title is "AddTask"
    Layout
        header3 of "DefineTaskWithin:<CloseTask.TaskName>"
        single column
            NameOfTask
                label is "TaskName"
            Instructions
                label is "Instructions"
                use text area of 3 lines
        visible when (CloseManagementGroup.HasTaskTypes)
            header3 of "Type"
            two column
                PrimaryTaskType
                    label is "Primary"
                    select is PrimaryCloseTaskTypeSelect
            two column
                SecondaryTaskType
                    label is "Secondary"
                    select is SecondaryCloseTaskTypeSelect
            two column
                TertiaryTaskType
                    label is "Tertiary"
                    select is TertiaryCloseTaskTypeSelect
        header3 of "Ownership"
        two column
            Team
                label is "Team"
                select is FinanceTeamSelect
            Team.Description
                no label
                display as text
        two column
            PersonResponsible
                label is "PersonResponsible"
                compact format
                select is FinanceTeamMemberActiveSelect
            PersonResponsible.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                no label
                display as text
        header3 of "CompanyAndCalendar"
        two column
            FinanceCompany
                label is "Company"
            FinanceCompany.FinanceCompanyField.Name
                no label
                display as text
        two column
            FinanceCalendar
                label is "Calendar"
            FinanceCalendar.Description
                no label
                display as text
        two column
            FinancePeriodGroup
                label is "PeriodGroup"
            FinancePeriodGroup.Description
                no label
                display as text
        header3 of "Schedule"
        single column independent
            text of "EnterNumberOfDaysFromThePeriodEndDate"
                header4
                bold
                color of blue
        single column independent
            paragraph
                StartDays
                    label is "Begin"
                StartTime
                    label is "DaysFromPeriodEndAt"
            paragraph
                EndDays
                    label is "Due"
                EndTime
                    label is "DaysFromPeriodEndAt"
                DueTimeSensitive
                    label is "IsTimeSensitive"
                        left of field
        paragraph
            text of "<NumberOfDaysNote>"
                bold
                align as label
        blank line
        single column independent
            text of "OrEnterASpecificDayOfTheMonthForThePeriod"
                header4
                bold
                color of blue
        single column independent
            paragraph
                StartDayOfMonth
                    label is "Begin"
                StartLastDayOfMonth
                    label is "DayOfTheMonth__Or__BeginOnTheLastDayOfTheMonth"
                        left of field
                StartTime
                    label is "At"
            paragraph
                StartNextMonth
                    label is "ForTheMonthFollowingThePeriod"
            paragraph
                EndDayOfMonth
                    label is "Due"
                EndLastDayOfMonth
                    label is "DayOfTheMonth__Or_____DueOnTheLastDayOfTheMonth"
                        left of field
                EndTime
                    label is "At"
                DueTimeSensitive
                    label is "IsTimeSensitive"
                        left of field
            paragraph
                EndNextMonth
                    label is "ForTheMonthFollowingThePeriod"
        blank line
        two column
            Hours
                label is "EstimatedHoursToComplete"
            WorkDaysOnly
                label is "ScheduleTaskForWorkDaysOnly"
        header3 of "RequirementsForCompletion"
        single column
            paragraph
                RequiresApproval
                    label is "Approval"
                visible when (RequiresApproval)
                    paragraph
                        ApprovalCode
                            select is ApprovalCodesWithLevels
                        ApprovalCode.Description
                            no label
                            display as text
            RequireSupportingDoco
                label is "AttachSupportingDocumentation"
            RequireJournalEntry
                label is "AttachJournalEntryDetail"
        header3 of "Visibility"
        two column
            Priority
                label is "Priority"
            Risk
                label is "Risk"
        header3 of "AttachProcessDocumentation"
        single column
            PrmDescription
                label is "Description"
            PrmAttachment
                label is "Attachment"
            PrmLinkToDocumentation
                label is "URL"
        visible when (CloseManagementGroup.AllowExternalEmails)
            header3 of "ExternalTaskInitiationEmailNotification"
            single column
                text of "<ExternalEmailUseMessage>"
                    bold
                    align as label
                blank line
                UseExternalEmailNotification
                    label is "UseExternalEmailNotificationForThisTask"
                SendExternalEmailOnOpenOfPeriod
                ExternalToEmail
                    label is "To"
                ExternalEmailSubject
                    label is "Subject"
                    use text area of 1 lines
                ExternalEmailContent
                    label is "Content"
