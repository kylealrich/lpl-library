StandaloneAOC is a Form
    title is "AddOnCharge"
    Layout
        visible when (not RecordExists)
            single column
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                PurchaseOrderImport
                POCode
                LineNumber
                RecordType
        visible when (RecordExists)
            single column
                display as text
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    PurchaseOrderImport
                    LineNumber
                    RecordType
        single column
            RunGroup
        blank line
        paragraph
            AddOnCharge
            AddOnCharge.Description
                no label
                display as text
        single column
            Closed
                label is "Status"
        visible when (not CancelAddOnCharge)
            single column
                AddOnChargePercent
                text of "OR"
                    bold
                EnteredUnitCost
                text of "OR"
                    bold
                ZeroCost
                text of "OR"
                    bold
                TotalAddOnChargeAmount
                    label is "Total"
            blank line
            paragraph
                Taxable
                TaxCode
            single column
                Summarize
                PrintOnPO
            paragraph
                Vendor
                PurchaseFromLocation
            single column
                Closed
                    label is "Status"
        visible when (CancelAddOnCharge)
            display as text
                single column
                    AddOnChargePercent
                    text of "OR"
                        bold
                    EnteredUnitCost
                    text of "OR"
                        bold
                    ZeroCost
                    text of "OR"
                        bold
                    TotalAddOnChargeAmount
                        label is "Total"
                blank line
                paragraph
                    Taxable
                    TaxCode
                single column
                    Summarize
                    PrintOnPO
                paragraph
                    Vendor
                    PurchaseFromLocation
