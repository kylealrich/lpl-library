PurchaseOrderContext is a Form
    Layout
        three column distributed
            display as text
                visible when (Company entered)
                    Company.RepresentativeText
                        label is "Company"
                PurchaseOrder.PurchaseFromLocation
                visible when (PurchaseOrder.Vendor entered)
                    PurchaseOrder.Vendor.RepresentativeText
                        label is "Vendor"
                paragraph
                    PurchaseOrder
                    PurchaseOrderRevision
                        label is "Revision"
                Buyer.Employee.PresentationNameSnapshot
                    label is "Buyer"
