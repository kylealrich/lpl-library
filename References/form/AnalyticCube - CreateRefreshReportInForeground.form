CreateRefreshReportInForeground is an ActionForm
    action is CreateRefreshReportInForeground
    title is "CreateRefreshReport"
    Layout
        single column
            ReportLastRefreshDate.Type
                label is "LastRefreshDate"
            visible when (ReportLastRefreshDate.Type.Default)
                text of "DefaultIsTheLastRefreshTime"
                    italics
                text of "_"
            visible when (ReportLastRefreshDate.Type.Date)
                ReportLastRefreshDate.Date
                    no label
                text of "ConvertedToGMT"
                    italics
            visible when (ReportLastRefreshDate.Type.TimeStamp)
                ReportLastRefreshDate.Stamp
                    no label
                text of "MustBeInGMT"
                    italics
            blank line
            ReportRefreshAsOfDate.Type
                label is "RefreshAsOfDate"
            visible when (ReportRefreshAsOfDate.Type.Default)
                text of "DefaultIsTheCurrentTime"
                    italics
                text of "-"
            visible when (ReportRefreshAsOfDate.Type.Date)
                ReportRefreshAsOfDate.Date
                    no label
                text of "ConvertedToGMT"
                    italics
            visible when (ReportRefreshAsOfDate.Type.TimeStamp)
                ReportRefreshAsOfDate.Stamp
                    no label
                text of "MustBeInGMT"
                    italics
