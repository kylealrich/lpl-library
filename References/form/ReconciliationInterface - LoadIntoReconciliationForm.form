LoadIntoReconciliationForm is an ActionForm
    action is LoadIntoReconciliation
    title is "LoadIntoReconciliation"
    Layout
        paragraph
            PrmReconciliationAccountStructure
                label is "ReconciliationAccountStructure"
            PrmReconciliationAccountStructure.Description
                no label
                display as text
        paragraph
            PrmReconciliationAccount
                label is "ReconciliationAccount"
            visible when (PrmReconciliationAccount.LevelType.Group)
                paragraph
                    PrmReconciliationAccount.ReconciliationGroup
                        display only
            visible when (PrmReconciliationAccount.IsAccountWithinGroup)
                paragraph
                    PrmReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
                        display only
            visible when (PrmReconciliationAccount.LevelType.Account)
                paragraph
                    PrmReconciliationAccount.ReconciliationCodeBlock
                        no label
                        compact format
                    PrmReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                        no label
                        display as text
