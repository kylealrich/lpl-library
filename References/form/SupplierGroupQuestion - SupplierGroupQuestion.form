SupplierGroupQuestion is a Form
    title is "Question"
    Layout
        paragraph
            display as text
                SupplierGroup
                SupplierGroup.Description
                visible when (RepositoryQuestionExists)
                    Question
                        label is "QuestionNumberFromRepository"
        single column
            visible when (QuestionExists)
                SupplierGroupQuestion
                    display as text
            QuestionText
                use text area of 8 lines
        two column
            ResponseType
        single column
            AllowResponseAttachment
                label is "AllowAttachmentUploadWithAnswer"
        two column
            visible when (ResponseType.Text)
                ResponseRules
            visible when (ResponseType.Number)
                ResponseRules
            visible when (ResponseType.Date)
                ResponseRules
            visible when (ResponseType.List)
                ResponseRules
            visible when (ResponseType.YesNoText)
                YesNoTextResponseRules
            visible when (ResponseType.YesNo)
                YesNoResponseRules
            visible when (ResponseRequired)
                OnlyRequiredForFuture
        two column
            Active
            DisplayOrder
                display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
