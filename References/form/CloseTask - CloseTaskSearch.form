CloseTaskSearch is a Form
    Layout
        five column distributed
            column1
                TaskName
                    label is "Task"
                FinanceTeam
                    label is "Team"
                TaskOwner
                    label is "Owner"
            column2
                DefaultCompany
                    label is "Company"
                DefaultCalendar
                    label is "Calendar"
                DefaultPeriodGroup
                    label is "PeriodGroup"
            column3
                RequiresApproval
                RequireSupportingDoco
                    label is "RequiresSupportingDocumentation"
                RequireJournalEntry
                    label is "RequiresJournalEntryDetail"
            column4
                paragraph
                    TaskLevel
                        label is "Level"
                        show up to 3 characters
                    Active
                paragraph
                    Priority
                        show up to 3 characters
                    Risk
                        show up to 3 characters
                DueTimeSensitive
            column5
                visible when (CloseManagementGroup.HasTaskTypes)
                    PrimaryTaskType
                        label is "PrimaryType"
                        select is PrimaryCloseTaskTypeSelect
                    SecondaryTaskType
                        label is "SecondaryType"
                        select is SecondaryCloseTaskTypeSelect
                    TertiaryTaskType
                        label is "TertiaryType"
                        select is TertiaryCloseTaskTypeSelect
