InventoryForecastVariance is an ActionForm
    action is InventoryForecastVariance
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        single column
            blank line
        three column
            column1
                paragraph
                    Location
                        show up to 10 characters
                    Location.Name
                        no label
                        display as text
            column2
                text of "\\or"
                    bold
            column3
                paragraph
                    RptGroup
                        label is "ReportGroup"
                    RptGroup.Name
                        no label
                        display as text
        two column distributed
            paragraph
                FrCurrPeriod
                    label is "FromPeriod"
                FrForecastYear
                    label is "Year"
            paragraph
                ToCurrPeriod
                    label is "ToPeriod"
                ToForecastYear
                    label is "Year"
        two column distributed
            column1
                CutoffPct
                    label is "UnitsPercentCutoff"
                IssueFlag
                    label is "IncludeIssues"
                AdjustmentFlag
                    label is "IncludeAdjustments"
                paragraph
                    InvenMajcl
                        label is "MajorInventoryClass"
                        show up to 10 characters
                    InvenMajcl.Description
                        no label
                        display as text
            column2
                ForecastNbr
                    label is "ForecastNumberOverride"
                TransferFlag
                    label is "IncludeTransfers"
                paragraph
                    InvenMincl
                        label is "MinorInventoryClass"
                        show up to 10 characters
                    InvenMincl.Description
                        no label
                        display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InventoryForecastVarianceReport_RDG
            column2 of 25%
                InventoryForecastVarianceReport_XPT
