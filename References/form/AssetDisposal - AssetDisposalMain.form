AssetDisposalMain is a Form
    title is "DisposalDetail"
    Layout
        two column
            column1 of 25%
                DisposalDate
                    display as text
                DisposalMethod
                    label is "Method"
                    display as text
                Voluntary
                visible when (FullOrPartial.Partial)
                    DisposalQuantity
                        display as text
                visible when (not FullOrPartial.Partial)
                    DisposalQuantity
                        display as text
                visible when (not FullOrPartial.Partial)
                    BookDisposal
            column2 of 75%
                FullOrPartial
                    display as text
                DisposalProperty
                    label is "Property"
                    display as text
                DisposalStatus
                    label is "DisposalStatus"
                    display as text
                paragraph
                    AssetDisposalCode
                    AssetDisposalCode.Description
                        no label
        blank line
        two column
            column1 of 25%
                text of "Currency"
                    bold
                ProceedsCurrency
                    label is "Proceeds"
                    display as text
            column2 of 75%
                text of "Amount"
                    bold
                Proceeds
                    no label
                    display as text
        two column
            column1 of 25%
                CostOfSaleCurrency
                    label is "Expense"
                    display as text
            column2 of 75%
                CostOfSale
                    no label
                    display as text
