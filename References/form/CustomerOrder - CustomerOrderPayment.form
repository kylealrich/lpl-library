CustomerOrderPayment is a Form
    Layout
        header2 of "Payment"
        two column distributed
            column1
                EnteredPayment
                    label is "Amount"
                CashInAdvanceRequiredPercent
                    label is "Percent"
            column2
                CheckNumber
                    label is "CheckNumber"
        two column distributed
            column1
                paragraph
                    ProformaCashInAdvanceRequiredPercent
            column2
                ProformaCashInAdvanceRequired
                    label is "ProformaRequired"
        single column
            visible when (ProformaCashInAdvanceRequired)
                DerivedProformaAmount
                    label is "ProformaAmount"
        two column distributed
            column1
                paragraph
                    TermsCode
                    TermsCode.Description.Desc
                        no label
                        display as text
                paragraph
                    BankPaymentCode
                        label is "PaymentCode"
                    BankPaymentCode.Description
                        no label
                        display as text
            column2
                CashOnDelivery
                    label is "C\\O\\D"
                CashInAdvanceRequired
                    label is "DownpaymentRequired"
        two column distributed
            paragraph
                BillingElectronicPaymentType
                    label is "ElectronicPaymentType"
                BillingElectronicPaymentType.Description
                    no label
                    display as text
            ElectronicPaymentExpirationDate
                label is "ExpiryDate"
        single column
            BillingCustomerCreditCard
                label is "ElectronicPaymentAccount"
        two column distributed
            ElectronicPaymentMinimumMargin
                label is "ElectronicPaymentMinimumMargin"
            ElectronicPaymentMinimumMarginPercent
                label is "ElectronicPaymentMarginPercent"
        single column
            LetterOfCredit
