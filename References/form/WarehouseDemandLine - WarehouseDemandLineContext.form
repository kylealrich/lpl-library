WarehouseDemandLineContext is a Form
    Layout
        display as text
            three column distributed
                column1
                    Company.DerivedCompanyDisplay
                        label is "Company"
                    paragraph
                        WarehouseDemand.DemandDocument
                            label is "Document"
                        WarehouseDemandLine.LineNumber
                            label is "LineNumber"
                    visible when (IsInventoriedOrNonStock)
                        paragraph
                            Item
                            Item.Description
                    visible when (LineType.Special)
                        paragraph
                            ItemDescription
                                label is "Item"
                column2
                    InventoryLocation.DerivedInventoryLocationIDName
                        label is "Location"
                    WarehouseDemandLine.DemandDocumentType
                    LineType
                column3
                    paragraph
                        WarehouseDemand.DemandSystemCode
                    paragraph
                        WarehouseDemandLine.ComponentSequence
                            label is "ComponentSequence"
                    visible when (IsCatchWeight)
                        paragraph
                            Item.StockUOM
                                label is "StockUOM"
                    visible when (not IsCatchWeight)
                        paragraph
                            TransactionUOM
