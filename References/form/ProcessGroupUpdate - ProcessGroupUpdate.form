ProcessGroupUpdate is an ActionForm
    action is ProcessGroupUpdate
    Layout
        paragraph
            VendorGroup
                select is VendorGroups
            VendorGroup.Description
                no label
                display as text
        paragraph
            ProcGrp
                label is "ProcessGroup"
                select is ProcessGroups
            ProcGrp.Description
                no label
                display as text
        single column
            UpdateOption
                label is "Update"
        paragraph
            VenClass
                label is "VendorClass"
                select is VendorClass
            VenClass.Description
                no label
                display as text
        single column
            VenPriority
                label is "VendorPriority"
        paragraph
            FrVendor
                label is "FromVendor"
                select is VendorName
            ThVendor
                label is "ToVendor"
                select is VendorName
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ProcessGroupUpdateReport_RDG
            column2 of 25%
                ProcessGroupUpdateReport_XPT
