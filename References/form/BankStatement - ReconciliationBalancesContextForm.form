ReconciliationBalancesContextForm is a Form
    title is "ReconciliationBalances"
    Layout
        visible when (false)
            AssignLocalPostingPeriod
        display as text
            paragraph
                CashManagementAccount
                CashManagementAccount.Title
                    no label
            paragraph
                BankStatement
                    label is "StatementNumber"
                StatementDate
                StatementCurrency
                StatementStatus
                visible when (CashManagementGroup.BankStatementReconciliationApprovalRequired)
                    ReconciliationApprovalStatus
                        label is "ReportStatus"
                PostingStatus
                EntryMethod
