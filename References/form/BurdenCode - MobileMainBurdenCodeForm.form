MobileMainBurdenCodeForm is a Form
    title is "Main"
    Layout
        paragraph
            DistributionAccount
                label is "GlobalLedgerAccount"
                compact format
        blank line
        paragraph
            Vendor
            Vendor.VendorName
                no label
                display as text
        paragraph
            BurdenType
        visible when (BurdenType.FlatAmount)
            paragraph
                FlatAmount
                    label is "Amount"
        visible when (BurdenType.AmountPerFinishedGoodsUnit)
            paragraph
                AmountPerUnit
                    label is "Amount_perUnit"
            paragraph
                AlternateUnitOfMeasure
                    label is "AlternateUOM"
                AlternateUnitOfMeasure.Description
                    no label
                    display as text
        visible when (BurdenType.AmountPerBurdenUnit)
            paragraph
                AmountPerUnitLabel
                    label is "Amount_perUnit"
                AmountPerUnit
                    no label
            paragraph
                PerBurdenUnitQuantityLabel
                    label is "Quantity"
                PerBurdenUnitQuantity
                    no label
            paragraph
                PerBurdenUnitMultiplierLabel
                    label is "Multiplier"
                PerBurdenUnitMultiplier
                    no label
        visible when (BurdenType.PercentOfFinishedGoodsInventoryCost)
            paragraph
                PercentageOfInventoryCost
                    label is "Percentage"
