RecallGeneralDisplay is a Form
    Layout
        display as text
            single column
                Description
                    use text area of 5 lines
            three column distributed
                visible when (ItemProposal)
                    RecallType
                        label is "NewItemProposalType"
                        select is RecallTypesForItemProposal
                        display as required when (true)
                visible when (not ItemProposal)
                    RecallType
                        label is "Type"
                        select is RecallTypesNotForItemProposal
                        display as required when (true)
                RecallType.Description
                    no label
                    display as text
                Equipment
            three column distributed
                create date
                    label is "CreationDate"
                    display as text
                RecallDate
                RecallReceivedDate
            three column distributed
                paragraph
                    RecallCoordinator
                        label is "Coordinator"
                        select is RecallCoordinatorList
                        display as required when (true)
                    RecallCoordinator.Employee.FirstLastName
                        no label
                        display as text
                QuantityRequired
                RecallSource
            header2 of "ProductDefaults"
            three column distributed
                RecallTaskInstruction
                    label is "TaskInstruction"
                    display as required when (true)
                TaskInstructionDescription
                    use text area of 3 lines
            three column distributed
                create date
                    label is "CreationDate"
                    display as text
                RecallDate
                RecallReceivedDate
            three column distributed
                visible when (ReportedByRecallUserEntered)
                    ReportedByRecallUser.FirstLastName
                        label is "ReportedBy"
                        display as text
                visible when (ProposedContractEntered)
                    paragraph
                        text of "ProposedContract:"
                        button of "<ProposedContract>"
                            link is ContractInformation
                            display as link
                        ProposedContract.ProposedContract
                            label is "ProposalStatus"
                            display as text
            three column distributed
                column1
                    paragraph
                        Vendor
                        Vendor.VendorName
                            no label
                            display as text
                    header5 of "ManufactureDateRange"
                    paragraph
                        ManufactureDateRange.Begin
                            label is "Beginning"
                        ManufactureDateRange.End
                            label is "End"
                column2
                    visible when (SupplierGroupExists)
                        paragraph
                            Supplier
                            Supplier.SupplierName
                                no label
                                display as text
                    header5 of "DistributionDateRange"
                    paragraph
                        DistributionDateRange.Begin
                            label is "Beginning"
                        DistributionDateRange.End
                            label is "End"
            header2 of "Manufacturer"
            four column distributed
                ManufacturerCodeDivision
                    label is "ManufacturerCode"
                    compact format
                paragraph
                    ManufacturerGln
                    MfgGlobalLocationNumberRel.Description
                        no label
                        display as text
                ManufacturerName
                ManufacturerAddress
                    form is PostalAddressMinimum
            header2 of "ManufacturerContact"
            three column distributed
                paragraph
                    ManufacturerContact.GivenName
                        label is "FirstName"
                        show up to 10 characters
                    ManufacturerContact.FamilyName
                        label is "LastName"
                        show up to 10 characters
                paragraph
                    ManufacturerPhone
                        label is "PhoneNumber"
                    text of "(InternationalPrefix,PhoneNumber,Extension)"
                        italics
                ManufacturerEmail
                    label is "EmailAddress"
            header2 of "FoodAndDrugAdministration_(FDA)"
            three column distributed
                FDAClassification
                    label is "Classification"
                FDADistrict
                    label is "District"
                FDAComments
                    label is "Comments"
                    use text area of 3 lines
            paragraph
                text of "IfItemFoundAndNoticeNotClosedRestrictCreationOf"
                    italics
                RestrictPurchaseOrderCreation
                    label is "PurchaseOrderLine"
                RestrictRequisitionCreation
                    label is "RequisitionLine"
                RestrictInventoryIssue
                    label is "InventoryIssueTransactionLine"
                RestrictInventoryReceipt
                    label is "InventoryReceiptTransactionLine"
