ViewContractSignatureRecipientForm is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        visible when (LatestRevisionRel.DisplaySignatureInfo)
            three column distributed
                column1
                    LatestRevisionRel.IDMSignatureEnvelopeStatus
                        label is "EnvelopeStatus"
                        display as tag
                            color of green when (LatestRevisionRel.IDMSignatureEnvelopeStatus.Completed)
                            color of orange when (LatestRevisionRel.IDMSignatureEnvelopeStatus.InProgress)
                            color of brown when (LatestRevisionRel.IDMSignatureEnvelopeStatus.Draft)
                            color of red when (LatestRevisionRel.IDMSignatureEnvelopeStatus.Cancelled)
                    LatestRevisionRel.IDMSignatureVersion
                        label is "DocumentVersion"
                column2
                    LatestRevisionRel.IDMSignatureEnvelopeUniqueID
                        label is "EnvelopeI\\D"
                column3
                    visible when (LatestRevisionRel.DisplayRefreshStatusAction)
                        button of "RefreshStatus"
                            action is RefreshStatus
                    paragraph
                        text of "<LatestRevisionRel.DerivedSignatureMessage>"
                            italics
                            color of blue
