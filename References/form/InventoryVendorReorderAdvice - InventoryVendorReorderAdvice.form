InventoryVendorReorderAdvice is an ActionForm
    action is InventoryVendorReorderAdvice
    Layout
        header2 of "Main"
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            Location
            Location.Name
                no label
                display as text
        single column
            text of "\\or"
                bold
        paragraph
            ReportGrp
                label is "ReportGroup"
            ReportGrp.Name
                no label
                display as text
        header4 of "_"
        text of "_"
        two column distributed
            paragraph
                InvenMajcl
                    label is "MajorInventoryClass"
                    show up to 10 characters
                InvenMajcl.Description
                    no label
                    display as text
            paragraph
                InvenMincl
                    label is "MinorInventoryClass"
                    show up to 10 characters
                InvenMincl.Description
                    no label
                    display as text
        two column distributed
            paragraph
                PurchMajcl
                    label is "MajorPurchasingClass"
                    show up to 10 characters
                PurchMajcl.Description
                    no label
                    display as text
            paragraph
                PurchMincl
                    label is "MinorPurchasingClass"
                    show up to 10 characters
                PurchMincl.Description
                    no label
                    display as text
        text of "_"
        two column distributed
            column1
                UpdateOption
                    label is "Update"
                WorksheetSw
                    label is "CreateWorksheet"
                ReorderPct
                    label is "ReorderPercentCutoff"
            column2
                PgBrkByVenSw
                    label is "PageBreakByVendor"
                IncludeInactive
                    label is "IncludeInactiveItems"
                ExcessPct
                    label is "ReorderExcessPercent"
        single column
            ConsignmentItems
            PrintExceptionRpt
                label is "PrintExceptionReport"
            SortOption
        header2 of "Vendor"
        paragraph
            PrimeVendor
                label is "Vendor"
            PrimeVendor.VendorName
                no label
                display as text
        paragraph
            PrimePurchFr
                label is "PurchaseFrom"
            PrimePurchFr.VendorName
                no label
                display as text
        blank line
        header2 of "OrderDays"
        blank line
        single column
            ReorderSunFl
                label is "Sunday"
            ReorderMonFl
                label is "Monday"
            ReorderTueFl
                label is "Tuesday"
            ReorderWedFl
                label is "Wednesday"
            ReorderThuFl
                label is "Thursday"
            ReorderFriFl
                label is "Friday"
            ReorderSatFl
                label is "Saturday"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InventoryVendorReorderAdviceReport_RDG
            column2 of 25%
                InventoryVendorReorderAdviceReport_XPT
