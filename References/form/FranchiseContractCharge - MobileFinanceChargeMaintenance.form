MobileFinanceChargeMaintenance is a Form
    use for action Update
    title is "ContractCharge"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            label is "_"
    Layout
        single column
            Company
                display as text
            Customer
                display as text
                select is CustomerSelectList
            paragraph
                CustomerShipTo
                    label is "ShipTo"
                    display as text
                CustomerShipTo.Name
                    no label
                    display as text
            FranchiseStandardCharge
                label is "Charge"
                compact format
                select is MobileFranchiseStandardCharges
            paragraph
                FranchiseContract
                    label is "Contract"
                Description
                    no label
                    show up to 25 characters
            Active
            NextCycleDate
                display only
            blank line
            BeginDate
            EndDate
            FranchiseStandardCharge.ChargeType
                label is "ChargeType:"
                display as text
            TaxableFlag
                label is "Taxable"
            TaxCode
            FranchiseStandardCharge.Currency
                display as text
            Frequency
            ProcessLevel
        blank line
        visible when (SpecialBasedCharge)
            single column
                InitializeSpecialCharges
                PaymentAmount
                    label is "Amount"
        visible when (SalesBasedCharge)
            header3 of "SalesTypeChargeDetail"
        visible when (SalesBasedCharge)
            two column
                column1
                    PercentOfSales
                    BaseAmount
                column2
                    MinimumAmount
                    MaximumAmount
            blank line
        visible when (NoteBasedCharge)
            header3 of "NoteTypeChargeDetail"
        visible when (NoteBasedCharge)
            three column independent
                column1
                    NumberOfPayments
                        label is "Number_ofPayments"
                    RemainingPayments
                    PaymentAmount
                column2
                    NoteAmount
                    InterestRate
                    BalanceFlag
                        label is "BalancePrint"
                        show up to 20 characters
                column3
                    CurrentBalance
                    ChargeToDate
        visible when (NoteBasedCharge)
            paragraph
                button of "Prepayments"
                    action is CreateChargePrepayment
        blank line
        header3 of "Accounts"
        single column
            RevenueAccount
                label is "Revenue"
                compact format
            AccrualAccount
                label is "Accrual"
                compact format
            AccrualOffsetAccount
                label is "AccrualOffset"
                compact format
        visible when (NoteBasedCharge)
            single column
                NoteAssetAccount
                    label is "NoteAsset"
                    compact format
                NoteAccrual
                    label is "NoteAccrual"
                    compact format
                NoteAccrualOffsetAccount
                    label is "NoteAccrualOffset"
                    compact format
        visible when (SalesBasedCharge)
            blank line
        visible when (SalesBasedCharge)
            header3 of "SlidingScale"
            two column independent
                column1
                    paragraph
                        BaseAmount
                            display only
                    blank line
                column2
                    paragraph
                        StepOperand
                            label is "ScaleOption"
                    blank line
        visible when (SalesBasedCharge)
            three column table
                column1
                    blank line
                    text of "1"
                    text of "2"
                    text of "3"
                    text of "4"
                    text of "5"
                    text of "6"
                    text of "7"
                    text of "8"
                    text of "9"
                    text of "10"
                column2
                    text of "Upper_\\Limit"
                        bold
                    StepLimits.StepLimit[1]
                        no label
                    StepLimits.StepLimit[2]
                        no label
                    StepLimits.StepLimit[3]
                        no label
                    StepLimits.StepLimit[4]
                        no label
                    StepLimits.StepLimit[5]
                        no label
                    StepLimits.StepLimit[6]
                        no label
                    StepLimits.StepLimit[7]
                        no label
                    StepLimits.StepLimit[8]
                        no label
                    StepLimits.StepLimit[9]
                        no label
                    StepLimits.StepLimit[10]
                        no label
                column3
                    text of "Charge_\\Percent"
                        bold
                    StepPercents.StepPercent[1]
                        no label
                    StepPercents.StepPercent[2]
                        no label
                    StepPercents.StepPercent[3]
                        no label
                    StepPercents.StepPercent[4]
                        no label
                    StepPercents.StepPercent[5]
                        no label
                    StepPercents.StepPercent[6]
                        no label
                    StepPercents.StepPercent[7]
                        no label
                    StepPercents.StepPercent[8]
                        no label
                    StepPercents.StepPercent[9]
                        no label
                    StepPercents.StepPercent[10]
                        no label
