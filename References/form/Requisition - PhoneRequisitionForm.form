PhoneRequisitionForm is a CompositeForm
    title is "Requisition_<Requisition>"
    called out actions only
    context form is PhoneRequisitionFormContext
        background is theme color
    Actions
        action is Release
            action icon is release
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
    Lines is a Panel
        list is RequisitionLinesRel.MobileViewOnlyRequisitionLines
    Comments is a Panel
        visible when (CommentsExist)
        list is RequisitionCommentRel.PfiCommentsCardList
    Additional is a Panel
        form is AdditionalPanel
    ApprovalHistory is a Panel
        visible when (HasWorkunit)
        form is ApprovalHistory
    MatrixApprovalHistory is a Panel
        visible when (ResponsibilityMatrixApprovalExists)
        list is ResponsibilityMatrixApprovalProcessorRel.ApprovalProcessorAuditRel.ApprovalProcessorHistoryList
