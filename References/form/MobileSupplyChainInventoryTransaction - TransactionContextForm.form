TransactionContextForm is a Form
    Layout
        display as text
            visible when (IsInventoryAdjustments)
                four column distributed
                    column1
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                        paragraph
                            button of "<InventoryTransaction>"
                                link is ViewInventoryTransaction
                                label is "Document"
                                display as link
                    column2
                        paragraph
                            InventoryLocation.DerivedInventoryLocationIDName
                                label is "InventoryLocation"
                        paragraph
                            create stamp.actor
                                label is "AdjustedBy"
                    column3
                        paragraph
                            TimeSubmitted
                        paragraph
                            TimeStarted
                    column4
                        paragraph
                            InventoryTransaction.Status
                                display as tag
                                    color of yellow when (InventoryTransaction.IsUnreleased)
                                    color of green when (InventoryTransaction.IsReleased)
                        paragraph
                            DerivedErrorMessage
                                label is "ErrorMessage"
            visible when (IsInventoryIssues)
                four column distributed
                    column1
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                        paragraph
                            FromToCompanyLocation.FromToCompany.DerivedCompanyDisplay
                                label is "RequestingCompany"
                        paragraph
                            button of "<InventoryTransaction>"
                                link is ViewInventoryTransaction
                                label is "Document"
                                display as link
                    column2
                        paragraph
                            InventoryLocation.DerivedInventoryLocationIDName
                                label is "InventoryLocation"
                        paragraph
                            DerivedRequestingLocationIDName
                                label is "RequestingLocation"
                        paragraph
                            create stamp.actor
                                label is "IssuedBy"
                    column3
                        paragraph
                            DerivedIssuedTo
                                label is "IssuedTo"
                        paragraph
                            TimeSubmitted
                        paragraph
                            TimeStarted
                    column4
                        paragraph
                            InventoryTransaction.Status
                                display as tag
                                    color of yellow when (InventoryTransaction.IsUnreleased)
                                    color of green when (InventoryTransaction.IsReleased)
                        paragraph
                            DerivedErrorMessage
                                label is "ErrorMessage"
            visible when (IsInventoryTransfer)
                four column distributed
                    column1
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                        paragraph
                            FromToCompanyLocation.FromToCompany.DerivedCompanyDisplay
                                label is "ToCompany"
                        paragraph
                            button of "<InventoryTransaction>"
                                link is ViewInventoryTransaction
                                label is "Document"
                                display as link
                    column2
                        paragraph
                            InventoryLocation.DerivedInventoryLocationIDName
                                label is "InventoryLocation"
                        paragraph
                            FromToCompanyLocation.FromToLocation.DerivedInventoryLocationIDName
                                label is "ToLocation"
                        paragraph
                            create stamp.actor
                                label is "TransferredBy"
                    column3
                        paragraph
                            TimeSubmitted
                        paragraph
                            TimeStarted
                        paragraph
                            IsInTransit
                                label is "InTransit"
                    column4
                        paragraph
                            InventoryTransaction.Status
                                display as tag
                                    color of yellow when (InventoryTransaction.IsUnreleased)
                                    color of green when (InventoryTransaction.IsReleased)
                        paragraph
                            Reference
                                label is "Comment"
                        paragraph
                            DerivedErrorMessage
                                label is "ErrorMessage"
            visible when (IsReceivingTransfer)
                four column distributed
                    column1
                        paragraph
                            Company.RepresentativeText
                        paragraph
                            TimeSubmitted
                        paragraph
                            TimeStarted
                    column2
                        paragraph
                            InventoryLocation
                                label is "StockFromLocation"
                        paragraph
                            create stamp.actor
                                label is "ReceivedBy"
                    column3
                        paragraph
                            button of "<InventoryTransaction>"
                                link is ViewInventoryTransaction
                                label is "Document"
                                display as link
                            InventoryTransaction.Status
                                display as tag
                                    color of yellow when (InventoryTransaction.IsUnreleased)
                                    color of green when (InventoryTransaction.IsReleased)
                        paragraph
                            button of "<OriginatingIntransitRec>"
                                link is ViewOriginatingIntransitRec
                                label is "OriginatingIntransitDocument"
                                display as link
                        paragraph
                            ErrorMessage
