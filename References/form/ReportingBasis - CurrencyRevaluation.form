CurrencyRevaluation is an ActionForm
    action is CurrencyRevaluation
    title is "CurrencyRevaluation"
    Layout
        display as text
            paragraph
                FinanceEnterpriseGroup
                ReportingBasis
        single column
            PrmYear
                label is "BasisYear"
            PrmSelectLedger
                label is "Ledger"
                select is ReportingBasisLedgerList
        paragraph
            PrmAccountingEntity
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
                select is ReportingBasisPostingAccountingEntityList
            text of "Or"
                header5
            PrmAccountingEntityGroup
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>Group"
        single column
            PrmChartSection
                label is "ChartSection"
        paragraph
            visible when (PrmChartSection not entered)
                PrmAccount
                    label is "<FinanceEnterpriseGroup.AccountLabel>"
            visible when (PrmChartSection.BalanceSheet)
                PrmAccount
                    label is "<FinanceEnterpriseGroup.AccountLabel>"
                    select is ChartSectionBalanceSheetRel.ChartAccountSelect
            visible when (PrmChartSection.IncomeStatement)
                PrmAccount
                    label is "<FinanceEnterpriseGroup.AccountLabel>"
                    select is ChartSectionIncomeStatementRel.ChartAccountSelect
            text of "Or"
                header5
            PrmGeneralLedgerTotalGroup
                label is "<FinanceEnterpriseGroup.AccountLabel>Group"
                select is AccountGroupRel.BusinessClassGroups
        single column
            paragraph
                PrmPeriodOption
                    label is "PeriodOption"
                    mouse over text is "SelectPeriodOption__Or__EnterDateRange"
                text of "Or"
                PrmDateRange.Begin
                    label is "DateRange__From"
                PrmDateRange.End
                    label is "To"
            PrmChangesOnly
                label is "ChangedTotalsOnly"
        paragraph
            PrmRateOption
                label is "RateOption"
            PrmPostOption
                label is "GainLossPostOption"
            visible when (PrmPostOption.OriginatingDimension)
                PrmOtherDimensions
            PrmAutoReverse
                label is "AutoReverse"
            PrmBySystemCode
                label is "BySystemCode"
            PrmReleased
                label is "CreateReleased"
            PrmSaveCalculation
                label is "SaveCalculation"
        paragraph
            PrmFunctional
                label is "FunctionalCurrency"
            PrmAlternate
                label is "AlternateCurrency"
            PrmAlternate2
                label is "Alternate2Currency"
            PrmAlternate3
                label is "Alternate3Currency"
            visible when (FinanceEnterpriseGroup.ProjectLabelExists)
                PrmProject
                    label is "<FinanceEnterpriseGroup.ProjectLabel>Currency"
        paragraph
            visible when (FinanceEnterpriseGroup.ReportCurrencyOneEntered)
                PrmReport1
                    label is "<FinanceEnterpriseGroup.ReportOne>"
            visible when (FinanceEnterpriseGroup.ReportCurrencyTwoEntered)
                PrmReport2
                    label is "<FinanceEnterpriseGroup.ReportTwo>"
            visible when (FinanceEnterpriseGroup.ReportCurrencyThreeEntered)
                PrmReport3
                    label is "<FinanceEnterpriseGroup.ReportThree>"
            visible when (FinanceEnterpriseGroup.ReportCurrencyFourEntered)
                PrmReport4
                    label is "<FinanceEnterpriseGroup.ReportFour>"
            visible when (FinanceEnterpriseGroup.ReportCurrencyFiveEntered)
                PrmReport5
                    label is "<FinanceEnterpriseGroup.ReportFive>"
