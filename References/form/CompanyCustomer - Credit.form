Credit is a Form
    Layout
        display as text
            blank line
            three column distributed
                column1
                    CurrentPlusBillOfExchangeBalance
                        label is "CurrentBalance"
                    CurrentBalance
                        label is "InvoiceBalance"
                    CreditLimit
                    PercentOfBalance
                    DerivedHighBalance
                        label is "HighBalance"
                    OpenOrderAmount
                        label is "OpenOrders"
                    visible when (BOEProcessing)
                        BillOfExchangeBalance
                            label is "B\\O\\EBalance"
                column2
                    TermsCode
                    CreditLimitDate
                    Customer.CreditAgencyCode
                    Customer.CreditAgencyDate
                    Customer.CreditAgencyNumber
                    OrderLimit
                column3
                    RiskIndicator
                        label is "RiskCode"
                    ReceivableHoldCode
                    PaysPrompt
                    TotalReturnToMaker
                    DisputedInvoiceAmount
                    DisputedInvoices
