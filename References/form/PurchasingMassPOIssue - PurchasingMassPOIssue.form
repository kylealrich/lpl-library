PurchasingMassPOIssue is an ActionForm
    action is PurchasingMassPOIssue
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
            PrintOption
                label is "Draft"
        header2 of "Selection"
        paragraph
            Location
                label is "ShipTo"
            Location.Name
                no label
                display as text
        blank line
        paragraph
            VendorClass
            VendorClass.Description
                no label
                display as text
            text of "Or"
                bold
            Vendor
            Vendor.VendorName
                no label
                display as text
        paragraph
            PurchFrLoc
                label is "PurchaseFrom"
            PurchFrLoc.VendorName
                no label
                display as text
        blank line
        paragraph
            BuyerGrp
                label is "BuyerGroup"
            BuyerGrp.Description
                no label
                display as text
            text of "Or"
                bold
            BuyerCode
                label is "Buyer"
            BuyerCode.Employee.PresentationNameSnapshot
                no label
                display as text
        blank line
        paragraph
            PoCode
                label is "P\\OCode"
            PoCode.Description
                no label
                display as text
        header2 of "POSelection"
        paragraph
            SelPoNumber.PO120SelPoNumberGroup[1].SelPoNumber
                label is "PurchaseOrder"
            SelPoNumber.PO120SelPoNumberGroup[2].SelPoNumber
                no label
        paragraph
            SelPoNumber.PO120SelPoNumberGroup[3].SelPoNumber
                no label
            SelPoNumber.PO120SelPoNumberGroup[4].SelPoNumber
                no label
        paragraph
            SelPoNumber.PO120SelPoNumberGroup[5].SelPoNumber
                no label
            SelPoNumber.PO120SelPoNumberGroup[6].SelPoNumber
                no label
        paragraph
            SelPoNumber.PO120SelPoNumberGroup[7].SelPoNumber
                no label
            SelPoNumber.PO120SelPoNumberGroup[8].SelPoNumber
                no label
        header2 of "Documents"
        paragraph
            PrintFlag
                label is "PaperIssue"
            FaxFlag
                label is "FaxIssue"
            EdiFlag
                label is "EDIIssue"
            EmailFlag
                label is "EmailIssue"
            XmlFlag
                label is "XMLIssue"
        header2 of "CommentCodes"
        paragraph
            HdrScm.HdrScm[1]
                label is "Header"
            HdrScm.HdrScm[2]
                no label
            HdrScm.HdrScm[3]
                no label
            HdrScm.HdrScm[4]
                no label
        blank line
        paragraph
            TrlScm.TrlScm[1]
                label is "Trailer"
            TrlScm.TrlScm[2]
                no label
            TrlScm.TrlScm[3]
                no label
            TrlScm.TrlScm[4]
                no label
        visible when (Company.UseIDM)
            header2 of "PrinterOption"
            paragraph
                IDMPrinter
                IDMPrinter.Description
                    no label
                    display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PurchasingMassPOIssueReport_RDG
                PurchasingMassPoIssueErrorReport_RDG
            column2 of 25%
                PurchasingMassPOIssueReport_XPT
                PurchasingMassPoIssueErrorReport_XPT
