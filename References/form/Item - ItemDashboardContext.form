ItemDashboardContext is a Form
    Layout
        display as text
            four column distributed
                column1
                    visible when (UseLinkedImage)
                        ImageURL
                            display as image
                    visible when (not UseLinkedImage)
                        Picture.File
                            display as image
                                missing image is random background
                                    foreground text is "<ItemDescriptionAbbreviation>"
                column2
                    paragraph
                        Item
                        Description
                    ItemGroup.ItemGroupDescription
                        label is "ItemGroup"
                    Reference1
                column3
                    Description2
                    StockUOM.UnitOfMeasureAndDescription
                        label is "StockUOM"
                    Reference2
                column4
                    paragraph
                        NotAvailableDisplay
                            no label
                            display as tag
                                color of gray when (Discontinued)
                                color of green when (Active)
                                color of red when (not Active)
                                color of red when (NotAvailableForUse)
                    paragraph
                        visible when (HasContract)
                            OnContractDisplay
                                no label
                                display as tag
                                    color of blue when (HasContract)
                        visible when (RecallNoticesExist)
                            RecallNoticesDisplay
                                no label
                                display as tag
                                    color of red when (RecallNoticesExist)
                        visible when (IsTrackedInAlternateUOM)
                            TrackedInAlternateUOMDisplay
                                no label
                                display as tag
                                    color of blue when (IsTrackedInAlternateUOM)
                    paragraph
                        Manufacturer.ManufacturerCode
                        Manufacturer.ManufacturerDivision
                            label is "Division"
                        ManufacturerNumber
                            label is "Number"
            paragraph
                Description3
