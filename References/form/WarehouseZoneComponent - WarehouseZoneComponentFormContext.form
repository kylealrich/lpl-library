WarehouseZoneComponentFormContext is a Form
    Layout
        visible when (not RecordExists)
            two column
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        InventoryLocation
                        InventoryLocation.Name
                            no label
                            display as text
                    paragraph
                        WarehouseZone
                        WarehouseZone.Description
                            no label
                            display as text
                column2
                    paragraph
                        Active
        visible when (RecordExists)
            two column distributed
                display as text
                    column1
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                        paragraph
                            InventoryLocation.DerivedInventoryLocationIDName
                                label is "Inventory_Location"
                        paragraph
                            WarehouseZone.WarehouseZoneAndDescription
                                label is "Zone"
                column2
                    paragraph
                        Active
