StatementForm is a CompositeForm
    is primary
    title is "ProcurementCardStatement<ProcurementCardStatement>inProgram<ProcurementCardProgram>_-_<ProcurementCardProgram.Description>"
    context form is StatementContextForm
        background is theme color
    Actions
        action is ProcurementCardInvoiceAndRelease
            label is "InvoiceAndReleaseProcurementCardStatement"
            hide when invalid
        action is ApproveAll
            label is "ApproveAllTransactions"
            hide when invalid
        action is CloseAll
            label is "CloseAllTransactions"
            hide when invalid
        action is RejectAll
            label is "RejectAllTransactions"
            hide when invalid
        action is RecalculateChargeValues
            hide when invalid
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Totals is a Panel
        form is Totals
    AllCharges is a Panel
        list is ProcurementCardStatementTransaction set.TransactionsForAStatement
    ChargesToApprove is a Panel
        visible when (ApprovableTransactionsExist)
        list is ProcurementCardStatementTransaction set.TransactionsToApproveForAStatement
    DisputedCharges is a Panel
        visible when (DisputedTransactionsExist)
        list is ProcurementCardStatementTransaction set.DisputedTransactionsForAStatement
    ApprovedCharges is a Panel
        visible when (ApprovedTransactionsExist)
        list is ProcurementCardStatementTransaction set.ApprovedTransactionsForAStatement
    ClosedCharges is a Panel
        visible when (ClosedTransactionsExist)
        list is ProcurementCardStatementTransaction set.ClosedTransactionsForAStatement
    ChargesWithUnbalancedDistributions is a Panel
        visible when (HasDistributionsOutOfBalance)
        list is DistributionsOutOfBalanceRel.UnbalancedTransactionsForAStatement
