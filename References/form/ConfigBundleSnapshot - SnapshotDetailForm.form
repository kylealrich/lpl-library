SnapshotDetailForm is a Form
    title is "Snapshot"
    Layout
        single column
            visible when (Description entered)
                Description
                    no label
                    display as text
        two column
            column1
                OriginationInfo
                    label is "Origination"
                SourceBundleDefinition
                    label is "Bundle"
                paragraph
                    LastExportTime
                    ExportCount
            column2
                LastImportTime
                paragraph
                    ConfigValidationStatus.Status
                        no label
                        display as tag
                            color of red when (ConfigValidationStatus.Status.Failed)
                            color of green when (ConfigValidationStatus.Status.Passed)
                            color of orange when (ConfigValidationStatus.Status.NotValidated)
                    ConfigValidationStatus.LastValidationTime
                        no label
                paragraph
                    LastAppliedTime
                    AppliedCount
                LastRollbackTime
                paragraph
                    visible when (CanRollback)
                        RollbackConfigValidationStatus.Status
                            label is "RollbackStatus"
                        RollbackConfigValidationStatus.LastValidationTime
                            no label
        paragraph
            visible when (SourceBundleDefinition entered)
                DerTags
            visible when (SourceBundleDefinition not entered)
                paragraph
                    ConfigurationsIncluded
                    SecurityClassesIncluded
                    PersonalizationsIncluded
