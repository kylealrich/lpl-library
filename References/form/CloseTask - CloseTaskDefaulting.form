CloseTaskDefaulting is a Form
    title is "Processing"
    Layout
        header3 of "CalendarCompany"
        four column distributed
            column1
                paragraph
                    DefaultCalendar
                        label is "Calendar"
                        show up to 10 characters
                    DefaultCalendar.Description
                        no label
                        display as text
            column2
                paragraph
                    DefaultPeriodGroup
                        label is "PeriodGroup"
                        show up to 10 characters
                    DefaultPeriodGroup.Description
                        no label
                        display as text
            column3
                paragraph
                    DefaultCompany
                        label is "Company"
                    DefaultCompany.FinanceCompanyField.Name
                        no label
                        display as text
        header3 of "Visibility"
        four column distributed
            Priority
                label is "Priority"
            Risk
                label is "Risk"
        blank line
        visible when (IsProcess)
            header3 of "Schedule"
            blank line
            four column distributed
                BeginDaysFromPeriodEnd
                    display as text
                DueDaysFromPeriodEnd
                    display as text
                HasDayOfMonthDescendants
                    label is "HasDetailTasksUsingDayOfMonth"
                        left of field
                    display as text
                HoursRequired
                    label is "EstimatedHoursToCompleteThisProcess"
                    display as text
        visible when (ShowInactiveMessageOnProcessing)
            single column
                blank line
                text of "<InactiveMessage>"
                    bold
                    color of red
                    align as label
        visible when (ShowInactiveParentMessageOnProcessing)
            single column
                text of "<ParentInactiveMessage>"
                    bold
                    color of red
                    align as label
