MAssetBookForm is a Form
    title is "AssetBookDetail"
    Layout
        header3 of "AssetBookDetails"
            underline color of blue
        single column
            paragraph
                Asset.Company
                    label is "AssetCompany"
                    display as text
                Asset.TagNumber
                    label is "Tag"
        single column independent
            TransientFromCurrency
                label is "BookCurrency"
                display as text
            visible when (DisplayAdjustmentDate)
                AdjustmentDate
                    label is "AdjustmentDate"
            visible when (Asset.LeasedAsset)
                paragraph
                    Asset.AssetLease.LeaseCompany
                        label is "LeaseCompany"
                    Asset.AssetLease.LeaseCompany.Name
                        no label
                        display as text
            visible when (Asset.LeasedAsset)
                paragraph
                    Asset.AssetLease.Lease
                    Asset.AssetLease.Lease.Description
                        no label
                        display as text
        paragraph
            Active
        paragraph
            Method
            Method.Description
                no label
                display as text
        paragraph
            Life
            LifeRemaining
        paragraph
            InServiceDate
            Convention
        paragraph
            Basis
        header3 of "Depreciation"
        paragraph
            YearToDateDepreciation
                label is "YearToDate"
            LifeToDateDepreciation
                label is "LifeToDate"
        paragraph
            YearPlacedInService
                label is "YearsInService"
            LifeInYears
        paragraph
            PersonalUseCode
                label is "VehicleLimitCode"
            PersonalUseCode.Description
                no label
                display as text
        paragraph
            BusinessPercent
            Asset.Company.GeneralLedgerCompany.Currency
                display as text
        paragraph
            BookValue
                display as text
            SalvageValue
        paragraph
            ComputeOption
        header3 of "Insurance"
        paragraph
            ActualInsuranceValue
        paragraph
            InsuranceCalculationMethod
                label is "CalculationMethod"
                select is InsuranceMethodsRel.InsuranceMethodList
            InsuranceCalculationMethod.Description
                no label
                display as text
        paragraph
            CalculatedInsuranceValue
        header3 of "Replacement"
        paragraph
            ReplacementCalculationMethod
                label is "CalculationMethod"
                select is ReplacementMethodsRel.ReplacementMethodList
            ReplacementCalculationMethod.Description
                no label
                display as text
        paragraph
            CalculatedReplacementValue
        header3 of "Tax"
        paragraph
            AssetTaxCreditTable
                label is "TaxCreditTable"
            AssetTaxCreditTable.Description
                no label
                display as text
        paragraph
            TaxCredit
        paragraph
            FirstYearExpenseAmount
