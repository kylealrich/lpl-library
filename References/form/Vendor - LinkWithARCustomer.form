LinkWithARCustomer is an ActionForm
    action is LinkWithARCustomer
    title is "LinkWithCustomer"
    Layout
        paragraph
            PrmCreateNewCustomer
                label is "CreateNewCustomer"
                    left of field
        paragraph
            PrmCustomerGroup
                label is "CustomerGroup"
            PrmCustomerGroup.CustomerBusinessGroup.Description
                no label
                display as text
        visible when (not PrmCreateNewCustomer)
            paragraph
                PrmCustomer
                    label is "Customer"
        visible when (PrmCreateNewCustomer)
            single column
                PrmCustomerName
                    label is "Name"
                SearchName
                LegalName
            single column
                PrmPostalAddress
                    label is "PostalAddress"
            paragraph
                ReceivableCompany
            paragraph
                ReceivableDefaultCode
