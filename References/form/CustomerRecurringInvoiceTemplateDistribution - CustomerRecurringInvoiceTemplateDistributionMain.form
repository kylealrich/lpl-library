CustomerRecurringInvoiceTemplateDistributionMain is a Form
    Layout
        four column distributed
            column1
                paragraph
                    LineType
                visible when (TaxEntityRel.ThirdParty.Sabrix)
                    paragraph
                        UNSPSCCode
                            compact format
                        UNSPSCCode.ShortDescription
                            label is "_"
                            display as text
            column2
                paragraph
                    TaxCode
                        display as text
            column3
                paragraph
                    TransactionTaxableAmount
                        display as text
            column4
        two column distributed
            column1
                header3 of "GlobalInput"
                paragraph
                    CompanyCustomerRel.VATRegistrationCountry
                        label is "VendorVatRegistration"
                        display as text
                    CompanyCustomerRel.VATRegistrationNumber
                        no label
                        display as text
                paragraph
                    TaxEntityRel.VATRegistrationCountry
                        label is "CompanyVatRegistration"
                        display as text
                    TaxEntityRel.VATRegistrationNumber
                        no label
                        display as text
                paragraph
                    ProductTaxCategory
                        display as text
                    ProductTaxCategory.Description
                        no label
                        display as text
                paragraph
                    TaxUsageCode
                        display as text
                    TaxUsageCode.Description
                        no label
                        display as text
                single column
                    visible when (IsHSNSACCodeEnabled)
                        paragraph
                            HSNSACCode
                            HSNSACCode.Description
                                no label
                                display as text
            column2
