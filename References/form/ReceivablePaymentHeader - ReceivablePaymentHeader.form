ReceivablePaymentHeader is a CompositeForm
    is primary
    title is "<PaymentHeaderTitle>"
    context form is ReceivablePaymentHeaderContextForm
        background is theme color
    Actions
        action is BatchGenerateIDMPaymentReceipts
            hide when invalid
        action is BatchEmailIDMPaymentReceipts
            hide when invalid
        action is BatchPrintIDMPaymentReceipts
            hide when invalid
        action is OpenBatchUnreleased.Release
            action icon is release
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is OpenBatchUnreleased.Create
            action icon is create
            label is "_"
            mouse over text is "Create_\\Receivable_\\Payment_\\Batch"
        action is save
            label is "_"
        action is OpenBatchUnreleased.Delete
            label is "_"
            mouse over text is "Delete_\\Receivable_\\Payment_\\Batch"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Options is a Panel
        form is Options
    CustomerPayments is a Panel
        visible when (not Company.AllowUnreleasedPaymentApplications)
        list is CustomerPaymentsRel.CustomerReceivablePaymentsList
    CustomerPaymentsAllowApplicationsUponEntry is a Panel
        title is "CustomerPayments"
        visible when (Company.AllowUnreleasedPaymentApplications)
        list is CustomerPaymentsRel.AllowApplicationsUponEntryCustomerPaymentsList
    NonARCashPayments is a Panel
        visible when (Status.OpenBatchUnreleased)
        list is CashNonArPaymentsRel.NonCashARReceivablePaymentsList
    ReleasedNonARCashPayments is a Panel
        title is "NonARCashPayments"
        visible when (Status.ReleasedBatch)
        list is CashNonArPaymentsRel.ReleasedNonCashARReceivablePaymentsList
    PaymentBatchDistributions is a Panel
        title is "Distributions"
        visible when (IsReleased)
        list is PaymentBatchDistributionsRel.ReceivableDistributionListDisplayOnly
    CashLedgerTransactions is a Panel
        visible when (Status.ReleasedBatch)
        list is CashLedgerTransactionRel.AllCashLedgerTransactionsList
    Attachments is a Panel
        list is ReceivablePaymentHeaderAttachment set.primary
