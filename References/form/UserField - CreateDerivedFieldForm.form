CreateDerivedFieldForm is an ActionForm
    action is CreateDerivedField
        on completion navigate to ConfigConsoleNav
    title is "AddDerivedField"
    Layout
        single column
            BusinessClassParam
            NameParam
        single column
            header2 of "DefaultLabel"
            paragraph
                HasExplicitLabelParam
                visible when (HasExplicitLabelParam)
                    ExplicitLabelParam
                        no label
                visible when (not HasExplicitLabelParam)
                    text of "LabelDefaultsToFieldName"
        single column
            header2 of "FieldType"
            paragraph
                ExtendedTypeParam
                valid when (ExtendedTypeParam.HasSize)
                    FieldSizeParam
                valid when (ExtendedTypeParam.HasDecimal)
                    DecimalSizeParam
        single column
            header2 of "Definition"
            DefinitionParam
                no label
