MobileCashApplicationSelectContextForm is a Form
    title is "CashApplicationSelection"
    Layout
        visible when (false)
            TransientIsolatedPaymentCompany
        visible when (PaymentExists)
            two column distributed
                Company
                    display as text
                Company.Name
                    label is "CompanyName"
                    display as text
            paragraph
                ReceivablePaymentHeader
                    label is "Batch"
                    display as text
                ReceivablePaymentHeader.Status
                    label is "Status"
                    display as text
            paragraph
                ReceivablePayment
                    label is "PaymentSequence"
                    display as text
                ReceivablePaymentHeader.Currency
                    label is "Currency"
                    display as text
            paragraph
                ReceivablePaymentHeader.DepositDate
                    display as text
                GeneralLedgerDate
                    label is "GlobalLedgerDate"
                    display as text
            single column
                visible when (not PaymentExists)
                    Customer
                    PaymentNumber
            paragraph
                visible when (not PaymentExists)
                    Customer.Name
                        no label
                        display as text
            paragraph
                visible when (UnreleasedOrUnassigned)
                    TransactionAmount
                        label is "Amount"
                    OriginalCurrency
                        no label
            paragraph
                display as text
                    CashApplicationPaymentOpen
                        label is "OpenAmount"
                        display as text
                    AppliedAmount
                        label is "AppliedAmount"
                        display as text
