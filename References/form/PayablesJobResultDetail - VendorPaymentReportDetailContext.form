VendorPaymentReportDetailContext is a Form
    title is "VendorReportDetail"
    Layout
        two column distributed
            column1
                paragraph
                    PayablesJobResult.Description
                        display as text
                    PaymentAmount
                        display as text
            column2
                paragraph
                    Vendor
                        display as text
                    VendorName
                        display as text
                visible when (PayablesJobResult.ParametersVendorPaymentReportResult.IncludeContracts)
                    ContractAmount
                        display as text
