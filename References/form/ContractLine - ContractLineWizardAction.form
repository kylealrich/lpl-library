ContractLineWizardAction is an ActionForm
    action is CreateFromWizard
    title is "CreateContractLineForContract<Contract>"
    Layout
        paragraph
            ContractGroup
            Contract
        single column
            ItemType
            text of "SelectAnItemTypeToDisplayProperFields"
                italics
            visible when (ItemType.Itemmast)
                ItemNumber
                ItemDescription
                    display as text
            visible when (not ItemType.Itemmast)
                ItemNumber
                ItemDescription
                    label is "Description"
            visible when (not ItemType.Service)
                VendorItem
            visible when (IsHSNSACCodeEnabled)
                paragraph
                    HSNSACCode
                    HSNSACCode.Description
                        no label
                        display as text
            visible when (ItemType.Service)
                ServiceCode
                visible when (ServiceCode.Quantity)
                    LifetimeMaximumQuantity
                        label is "ServiceQuantity"
            visible when (ItemType entered)
                UOM.UnitOfMeasure
                    label is "UnitOfMeasure"
            Manufacturer
                label is "ManufacturerCode"
                compact format
            ManufacturerNumber
            visible when (ItemType entered)
                BaseCost
                    label is "UnitCost"
            visible when (ItemType.Service)
                CommodityCode
                    compact format
            visible when (ItemType.Special)
                CommodityCode
                    compact format
            TransientAccount
                label is "DefaultAccount"
                compact format
