CustomerRegistration is a CompositeForm
    is primary
    title is "CustomerRepresentative<DerivedFormTitle>"
    context form is CustomerRepresentativeContext
        background is theme color
    PrimaryContactInformation is a Panel
        visible when (not CustomerRepresentativeExists)
        form is InternalRegistration
    ViewPrimaryContactInformation is a Panel
        visible when (CustomerRepresentativeExists)
        form is InternalRegistrationUpdate
    CompanyInformation is a Panel
        form is CustomerRepresentative
    Contacts is a Panel
        title is "Contacts<CustomerContactCount>"
        list is CustomerRepresentativeContact set.CustomerContacts
    Questions is a Panel
        visible when (CustomerGroup.QuestionsExist)
        template is CustomerGroup.ActiveCustomerGroupQuestionRel
            business class is CustomerRepresentativeQuestionResponse
                form is CustomerQuestionResponse
    Comments is a Panel
        title is "Comments<CustomerCommentCount>"
        list is CustomerRepresentativeComment set.CustomerRepresentativeComment
    PortalMessages is a Panel
        visible when (CustomerRepresentativeExists)
        list is CustomerRepresentativeMessage set.CustomerRepresentativeMessages
