StudentActivityAccountCodeForm is a Form
    is primary
    title is "<mode>AccountCode"
    Actions
        action is Create
        action is AddAccountCodeToSchool
            hide when invalid
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    Layout
        two column
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivityAccountCode
                paragraph
                    CodeType
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    Description
        paragraph
            FinanceCodeBlock
                label is "Account"
                compact format
        paragraph
            Active
