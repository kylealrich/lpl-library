UserCardViewChangesForm is a Form
    disable field options
    Layout
        visible when (TransactionRecordExists)
            paragraph
                UserCardViewRel.BusinessView
                    header2
                    display as text
                    mouse over text is "ConfiguredBusinessView"
                UserCardViewRel.BusinessCardView
                    header2
                    display as text
                visible when (UserCardViewRel.Global)
                    text of "(Configuration)"
                        header3
                visible when (UserCardViewRel.IsFolder)
                    text of "(Folder)"
                        header3
                visible when (UserCardViewRel.IsActor)
                    text of "(Personalization)"
                        header3
                button of "<BusinessView>Details"
                    link is UserCardViewNav
                    display as link
        visible when (not TransactionRecordExists)
            paragraph
                text of "<BusinessView>RecordDoesNotExist"
