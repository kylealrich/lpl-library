PFlowContext is a Form
    Layout
        display as text
            two column
                Supplier
                SupplierName
                    label is "SupplierName"
            visible when (ParentSupplier entered)
                two column
                    ParentSupplier
                    ParentSupplierRel.SupplierName
                        label is "SupplierName"
            two column
                DoingBusinessAs
                DandBNbr
                    label is "Dun&Bradstreet"
            two column
                BusinessType
                Vendor
                    label is "VendorID"
            two column
                paragraph
                    TaxIdGroup.TaxIdType
                    visible when (TaxIDTypeEntered)
                        text of "TaxIDTypeEntered"
                            italics
                    visible when (not TaxIDTypeEntered)
                        text of "TaxIDTypeNotEntered"
                            italics
                paragraph
                    visible when (TaxIDEntered)
                        text of "TaxIDEntered"
                            italics
                    visible when (not TaxIDEntered)
                        text of "TaxIDNotEntered"
                            italics
            two column
                VATRegistrationCountry
                VATRegistrationNumber
            two column
                GlobalLocationNumber
                WebAddress
                    label is "Website"
            visible when (HasBankInformation)
                header3 of "BankInformation"
                single column
                    BankInformationGroup
                        form is BankInformationGroupFormNoMask
