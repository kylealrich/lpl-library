RecallProductTaskItem is a Form
    is primary
    title is "Product"
    restrict action MobileUpdate
    Layout
        display as text
            paragraph
                RecallNotice
                RecallNotice.Name
                    no label
            paragraph
                RecallNoticeTask
                RecallNoticeTask.RecallTaskInstruction
                    no label
            paragraph
                RecallProduct
                RecallProduct.ProductName
                    no label
            visible when (RecallGroup.EnterQuantitiesByLocation)
                paragraph
                    Company
                    InventoryLocation
                    RequestingLocation
            paragraph
                RecallProductItem.Item
                RecallProductItem.Description
                    no label
        paragraph
            QuantityIdentified
                label is "QuantityFound"
            ZeroQuantityFound
            Uom
