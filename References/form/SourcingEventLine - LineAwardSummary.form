LineAwardSummary is a SummaryForm
    title is "LineAwardSummaryForEvent#<SourcingEvent.EventVersionString>:_<SourcingEvent.Name>,Line<SourcingEventLine>"
    First Page Header
        Layout
            visible when (SourcingEvent.LogoEntered)
                visible when (SourcingEvent.UseCompanyLogo)
                    single column
                        Company.ReportLogo.File
                            no label
                            display as image
                visible when (SourcingEvent.UseGroupLogo)
                    single column
                        Company.SourcingGroup.ReportLogo.File
                            no label
                            display as image
            header2 of "_"
    Page Header
        Layout
            header2 of "_"
                show border color of black
                shade
            single column
                text of "Event#<SourcingEvent.EventVersionString>:_<Name>,Line<SourcingEventLine>"
            header2 of "_"
            blank line
    Page Footer
        Layout
            two column
                text of "<current timestamp>"
                    left align
                text of "Page<page number>"
                    right align
    Layout
        header2 of "LineAwardSummary"
            show border color of black
            shade
            center
        header2 of "_"
        two column
            SourcingEvent
            SourcingEvent.Name
                label is "EventName"
        two column
            SourcingEventLine
                label is "Line"
            Name
                label is "LineName"
        paragraph
            ItemNumber
                label is "Item"
            ItemDescription
                no label
            ItemDescription2
                no label
        visible when (HasThirdDescription)
            single column
                ItemDescription3
                    label is "LongItemDescription"
        paragraph
            CommodityCode
                label is "CommodityCode"
                compact format
            CommodityCode.Description
                no label
        two column
            Quantity
            UOM.UnitOfMeasure
        single column
            visible when (HasCancelledQuantity)
                CancelledQuantity
        blank line
        header2 of "AwardedSupplierResponses"
            show border color of black
            shade
            center
        header2 of "_"
        form is AwardedLineSuppliers
        visible when (HasAlternateAward)
            header2 of "AwardedAlternateResponses"
                show border color of black
                shade
                center
            header2 of "_"
            form is AwardedAlternateLineSuppliers
        header2 of "NonAwardedSupplierResponses"
            show border color of black
            shade
            center
        header2 of "_"
        form is NonAwardedLineSuppliers
        visible when (HasAlternateNonAward)
            header2 of "NonAwardedAlternateResponses"
                show border color of black
                shade
                center
            header2 of "_"
            form is NonAwardedAlternateLineSuppliers
