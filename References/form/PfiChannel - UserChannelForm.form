UserChannelForm is a Form
    title is "UserChannel"
    restrict action TestConnectionWithTraceLog
    Layout
        single column
            PfiChannel
            Description
            IsEnabled
            UserChannel.ActionType
            visible when (UserChannel.ActionType.Email)
                header2 of "IncomingMailServerSettings"
                UserChannel.IncomingMailServer
                text of "Example:_imap.\\example.\\com"
                    italics
                UserChannel.IncomingUserName
                UserChannel.IncomingPassword
                UserChannel.IncomingTLS
                header2 of "OutgoingMailServerSettings"
                UserChannel.OutgoingMailServer
                text of "Example:_smtp.\\example.\\com"
                    italics
                UserChannel.OutgoingUserName
                UserChannel.OutgoingPassword
                UserChannel.OutgoingTLS
                header2 of "OtherEmailSettings"
                UserChannel.EmailScanIntervalTime
                UserChannel.EmailLastScanTime
                UserChannel.SendHelpReplies
