CustomerActivityComposite is a CompositeForm
    title is "Activity<CompanyCustomerTitle>"
    context form is CustomerActivityContext
        background is theme color
    restrict action Activate
    restrict action Anonymize
    restrict action BalanceUpdateGroupHasDifferentCurrency
    restrict action BODDataInitialLoadCompanyCustomerCriteria
    restrict action Create
    restrict action CreateOrderEntryCustomer
    restrict action CreatePaymentRequestNoticeInIDM
    restrict action CreatePendingAddAllEFTAdjustments
    restrict action CreatePendingDeleteAllEFTAdjustments
    restrict action CreatePendingHoldAllEFTAdjustments
    restrict action CreatePendingPostponeAllEFTAdjustments
    restrict action CreatePendingUnselectAllEFTAdjustments
    restrict action CustomerAddCreditLimitChangeAlert
    restrict action CustomerBalanceConversion
    restrict action CustomerPurge
    restrict action Deactivate
    restrict action Delete
    restrict action DisableAutoEmailing
    restrict action FastUpdate
    restrict action GenerateEFTNotificationPrintInIDM
    restrict action InterfaceReleasedToAP
    restrict action LinkToCustomerRepresentative
    restrict action LinkWithAPVendor
    restrict action Netting
    restrict action ProcessPendingAdjustments
    restrict action ProcessPendingEFTAdjustments
    restrict action Purge
    restrict action PurgeAuditLog
    restrict action ReleaseInvoiceObligationGrouping
    restrict action ReleaseMyInvoiceObligationGrouping
    restrict action ReleaseToAPInterface
    restrict action RemovePendingAdjustments
    restrict action ResetBalance
    restrict action Review
    restrict action SuppressActions
    restrict action TriggerCustomerPartyMaster
    restrict action TriggerCustomerPartyMasterNativeLPLBOD
    restrict action TriggerPayFromPartyMasterBOD
    restrict action Update
    restrict action UpdateBODIdFields
    restrict action UpdateCurrentBalance
    restrict action UpdateDraftBalance
    restrict action UpdateDunning
    restrict action UpdateFilters
    restrict action UpdatePaymentCode
    restrict action UpdatePeriodTotals
    restrict action UpdateVertexTaxCode
    restrict action UpdateVertexTaxCodes
    restrict action UpdateWithVertexTaxAreaId
    restrict action ValidateCustomerVATRegistration
    restrict action ValidateVATRegistrationNumber
    restrict action RefreshData
    Actions
        action is ClearFilter
            action icon is finalize
            hide when invalid
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is search
            label is "_"
            mouse over text is "Search"
        action is refresh
            label is "_"
            mouse over text is "Refresh"
    TransactionsNotFiltered is a Panel
        title is "Transactions"
        visible when (not FilterExists)
        list is OpenReceivableInvoiceDetailRel.CustomerActivityListIsOpen
    TransactionsFilteredNoHistory is a Panel
        title is "Transactions"
        visible when (FilterExistsAndNoHistory)
        list is OpenReceivableInvoiceDetailRel.CustomerActivityListFiltered
    TransactionsFilteredOnlyShowHistory is a Panel
        title is "Transactions"
        visible when (FilterExistsAndOnlyShowHistory)
        list is ClosedTransactionsNavRel.CustomerActivityListFiltered
    TransactionsFilteredIncludeHistory is a Panel
        title is "Transactions"
        visible when (FilterExistsAndIncludeHistory)
        list is ReceivableInvoiceDetailRel.CustomerActivityListFiltered
    PaymentsNotFiltered is a Panel
        title is "Payments"
        visible when (not FilterExists)
        list is OpenOrUnreleasedReceivablePaymentsRel.CustomerActivityListIsOpen
    PaymentsFilteredNoHistory is a Panel
        title is "Payments"
        visible when (FilterExistsAndNoHistory)
        list is OpenOrUnreleasedReceivablePaymentsRel.CustomerActivityListFiltered
    PaymentsFilteredOnlyShowHistory is a Panel
        title is "Payments"
        visible when (FilterExistsAndOnlyShowHistory)
        list is ClosedPaymentNavRel.CustomerActivityListFiltered
    PaymentsFilteredIncludeHistory is a Panel
        title is "Payments"
        visible when (FilterExistsAndIncludeHistory)
        list is ReceivablePaymentsForCustomerRel.CustomerActivityListFiltered
    Drafts is a Panel
        visible when (BOEProcessing)
        list is CustomerDraftRel.CustomerActivityList
    NetBalance is a Panel
        visible when (HasVendor)
        list is CustomerRel.VendorGroupAndVendor.Vendor.TotalVendorBalancesRel.CustomerBalanceInterfaceList
