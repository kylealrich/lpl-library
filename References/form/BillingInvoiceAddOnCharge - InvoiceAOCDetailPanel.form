InvoiceAOCDetailPanel is a Form
    Layout
        two column distributed
            column1 of 35%
                paragraph
                    Miscellaneous
                        label is "AddOnCharge"
                        compact format
                    Miscellaneous.Description
                        no label
                        display as text
                        show up to 1 characters
                paragraph
                    TaxExemptCode
                        label is "TaxExempt"
                    visible when (TaxExemptCode.Taxable)
                        TaxableAmount.TransactionAmount
                            label is "Taxable"
                            display as text
                paragraph
                    OrderDiscount
                        label is "Discountable"
            visible when (Miscellaneous.ChargeType.FlatAmount)
                column2 of 35%
                    paragraph
                        EnteredPrice.TransactionAmount
                            label is "FlatAmount"
                    paragraph
                        Cost
            visible when (Miscellaneous.ChargeType.Percentage)
                column2 of 35%
                    paragraph
                        PricePercent
                    paragraph
                        CostPercent
            visible when (Miscellaneous.ChargeType.UnitPrice)
                column2 of 35%
                    visible when (BillingInvoiceLine entered)
                        paragraph
                            EnteredUnitPrice.TransactionAmount
                                label is "UnitPrice"
                        paragraph
                            UnitCost
        single column
            visible when (TaxOutputDueAccount)
                paragraph
                    EntityTaxCodeRel.TaxOutputDueAccount
                        label is "TaxAccount"
                        display only
                        compact format
            visible when (TaxOutputAccount)
                paragraph
                    EntityTaxCodeRel.TaxOutputAccount
                        label is "TaxAccount"
                        display only
                        compact format
            paragraph
                SalesAccount
                    compact format
            paragraph
                COGSAccount
                    compact format
