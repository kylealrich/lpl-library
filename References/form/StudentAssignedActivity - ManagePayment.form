ManagePayment is an ActionForm
    action is ManagePayment
    title is "Payment"
    Layout
        single column
            PrmReceiptAmount
                label is "PaymentAmount"
            visible when (NoReceiptApplied)
                PrmReferenceNumber
                    label is "ReferenceNumber"
                PrmReceiptDate
                    label is "ReceiptDate"
            visible when (PaymentInProcess)
                ClearCurrentReceipt
