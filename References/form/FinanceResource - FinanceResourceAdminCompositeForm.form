FinanceResourceAdminCompositeForm is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is FinanceResourceAdminContextForm
        background is theme color
    Actions
        navigation is CurrentResourceAssignments
            label is "ViewCurrentAssignments"
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
            hide when invalid
        action is save
            action icon is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    FinanceResourceDetails is a Panel
        title is "Details"
        form is FinanceResourceDetailsForm
    InvoiceApprovalAssignments is a Panel
        valid when (FinanceResourceEntered)
        list is FinanceResourceInvApprovalRel.FinanceResourceInvApprovals
    SmartReconciliation is a Panel
        valid when (FinanceResourceEntered)
        form is SmartReconSettings
