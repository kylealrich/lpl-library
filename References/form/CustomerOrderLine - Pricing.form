Pricing is a Form
    restrict action CreateCustomerOrderReturnLine
    Layout
        two column
            PriceStatus
                label is "PricingMethod"
            NoCharge
        paragraph
            PriceDate
        paragraph
            ListName
                label is "PriceList"
        paragraph
            ContractNumber
                label is "Contract"
        paragraph
            EnteredPrice
                label is "UnitPrice"
            SellingPriceUOM
                no label
                select is ValidSellPriceUnitsOfMeasure
        two column
            EnteredDiscount
                label is "AdditionalDiscount"
            OrderDiscount
                label is "Discountable"
        paragraph
            Promotion
        paragraph
            TaxStatus
        paragraph
            TaxCode
        paragraph
            ProjectedCost
                display as text
        paragraph
            ProjectedMargin
                display as text
        paragraph
            GrossAmountBase
                display as text
        paragraph
            TaxableBase
                label is "TaxableAmount"
                display as text
        paragraph
            DiscountedAmountBase
                label is "PricingDiscount"
                display as text
        paragraph
            AdditionalDiscountBase
                label is "Add\\-\\OnDiscount"
                display as text
        paragraph
            NetAmountBase
                label is "Net"
                display as text
