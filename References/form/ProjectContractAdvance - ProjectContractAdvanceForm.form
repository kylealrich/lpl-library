ProjectContractAdvanceForm is a Form
    is primary
    title is "AdvanceBilling"
    Layout
        single column
            Description
                display as text
            paragraph
                Project
                    label is "<FinanceEnterpriseGroup.ProjectLabel>"
                    display as text
                Project.Description
                    no label
                    display as text
            paragraph
                Amount
                    display as text
                ProjectContract.Currency
                    display as text
            paragraph
                InvoiceDate
                    display as text
                Status
                    display as text
            AdvanceFullAccount
                display as text
                compact format
            Taxable
                display as text
            UnitsAmount
                display as text
            Hold
                display as text
