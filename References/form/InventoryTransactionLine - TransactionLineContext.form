TransactionLineContext is a Form
    Actions
        action is Unreleased.Create
        action is save
        action is Unreleased.ReleaseInventoryTransaction
        action is Unreleased.Delete
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        InventoryTransaction.Company.DerivedCompanyDisplay
                            label is "Company"
                    paragraph
                        InventoryTransaction.InventoryDocumentType
                        Company.GeneralLedgerCompany.Currency
                            label is "Currency"
                column2
                    paragraph
                        InventoryTransaction.InventoryLocation.RepresentativeText
                            label is "Location"
                    TransactionSystemCode
                column3
                    paragraph
                        InventoryTransaction
                            display as text
                        InventoryTransactionLine.LineNumber
                            label is "Line"
                            display as text
                        InventoryTransaction.StatusMsgTagField
                            display as tag
                                color of yellow when (InventoryTransaction.IsUnreleased)
                                color of green when (InventoryTransaction.IsReleased)
                                color of green when (InventoryTransaction.Status.NonGlobalLedger)
                                color of green when (InventoryTransaction.Status.GlobalLedgerUpdated)
                                color of yellow when (InventoryTransaction.Status.ReleaseInProgress)
                    paragraph
                        visible when (not IsInventoryTransaction)
                            OriginatingTransactionDocument
                            OriginatingTransactionLine
            three column distributed
                display as text
                    visible when (InventoryTransaction.ShowToCompany)
                        InventoryTransaction.FromToCompanyLocation.FromToCompany.RepresentativeText
                            label is "ToCompany"
                    visible when (InventoryTransaction.IsIntransitReceivingOrReceivingTransfer)
                        InventoryTransaction.FromToCompanyLocation.FromToCompany.RepresentativeText
                            label is "FromCompany"
                    visible when (InventoryTransaction.IsDirectTransferOrInventoryTransfer)
                        InventoryTransaction.FromToCompanyLocation.FromToLocation.RepresentativeText
                            label is "ToLocation"
                    visible when (InventoryTransaction.IsInventoryIssues)
                        InventoryTransaction.FromToCompanyLocation.RequestingLocation.RepresentativeText
                            label is "RequestingLocation"
                    visible when (InventoryTransaction.IsIntransitReceivingOrReceivingTransfer)
                        InventoryTransaction.FromToCompanyLocation.FromToLocation.RepresentativeText
                            label is "FromLocation"
