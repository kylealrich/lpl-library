AddSubstituteForm is an ActionForm
    action is AddSubstitute
    title is "AddSubstituteItem"
    Layout
        single column
            PurchaseOrderLine
                label is "Line"
                display as text
        paragraph
            Item
                label is "OriginalItem"
                display as text
            PurchaseOrderLine.VendorItem
                label is "OriginalVendorItem"
                display as text
            text of "<Item.Description>"
        single column
            PrmItem
            visible when (NonInventoryItem)
                PrmItemDescription
                PrmItemType
            visible when (InventoryItem)
                PrmItemDescription
                    display as text
                PrmItemType
                    display as text
            PrmVendorItem
            PrmEnteredReceivedQuantity
            PrmReceivedUOM
            PrmItemGTIN
            PrmPackageTrackingNumber
            PrmNumberOfLabels
