DunningLetterFileGeneration is an ActionForm
    action is DunningLetterFileGeneration
    title is "AdvancedDunningLetterFileGeneration"
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            text of "Or"
                bold
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        blank line
        single column
            PrintOption
                label is "PrintFile"
        single column
            CsvOption
                label is "C\\S\\VFile"
        single column
            UpdateOption
                label is "UpdateHistory"
        single column
            visible when (not Company.UseIDM)
                LetterFormat
        single column
            FileName
        single column
            CompanyCollectionID
                label is "CompanyCollectionI\\D"
        single column
            IncludeCustomerTaxID
                label is "IncludeCustomerTaxI\\D"
        single column
            ReportOption
        visible when (Company.UseIDM)
            header2 of "PrinterOption"
            paragraph
                IDMPrinter
                IDMPrinter.Description
                    no label
                    display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DunningLetterFileGenerationReport_RDG
                CreditBalanceReport_RDG
                DunningLetter_RDG
            column2 of 25%
                DunningLetterFileGenerationReport_XPT
                CreditBalanceReport_XPT
                DunningLetter_XPT
