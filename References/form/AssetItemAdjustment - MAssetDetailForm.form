MAssetDetailForm is a Form
    title is "AssetDetails"
    Layout
        paragraph
            Asset
                display as text
            Asset.DerivedStatus
                label is "Status"
                display as text
        paragraph
            Asset.Description
                label is "Description"
                display as text
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                    display as text
                Asset.AssetLease.LeaseCompany.Name
                    no label
                    display as text
            paragraph
                Asset.AssetLease.Lease
                    display as text
                Asset.AssetLease.Lease.Description
                    no label
                    display as text
        paragraph
            Asset.TagNumber
                display as text
        paragraph
            AssetAdjustment.AdjustmentDate
                display as text
            AssetAdjustment.AdjustmentStatus
                label is "Status"
                display as text
        paragraph
            AssetAdjustment.CreationDate
                display as text
            AssetAdjustment.CreatedBy
                display as text
