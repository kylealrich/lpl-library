MonitorTasks is an ActionForm
    action is MonitorTasks
    title is "MonitorNew_andAcceptedTasksOnActiveRecallNotices"
    Layout
        paragraph
            PrmRecallGroup
                label is "ItemLifecycleManagementGroup"
            PrmRecallGroup.Description
                no label
                display as text
        paragraph
            PrmRecallType
                label is "RecallType"
            PrmRecallType.Description
                no label
            blank line
        header2 of "TaskReminders"
        single column
            PrmSendRemindersToResponders
                label is "SendReminders_toTaskOwners"
                    left of field
        paragraph
            PrmRemindInHoursBeforeDueDate
                label is "Number_ofHoursPrior_toDueDate_andTime"
            text of "(ifLeftBlank,RemindersWillBeForPastDueTasksOnly)"
        blank line
        header2 of "TaskEscalations"
        single column
            PrmSendEscalationsToCoordinators
                label is "SendEscalations_toCoordinators_andSupervisors"
                    left of field
        paragraph
            PrmEscalationInHoursBeforeDueDate
                label is "Number_ofHoursPrior_toDueDate_andTime"
            text of "(ifLeftBlank,EscalationsWillBeForPastDueTasksOnly)"
