MUpdateInvoiceDetailsFromContractLine is a Form
    use for action Active.UpdateInvoiceDetailsFromContractLine
    title is "UpdateInvoiceDetailsFromContractLine"
    restrict action Delete
    restrict action CreateWithTierCosts
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        display as text
            paragraph
                Contract
                Contract.Name
                    label is "ContractName"
            paragraph
                ContractLine
                    label is "LineNumber"
            paragraph
                ItemDescription
                    label is "Description"
            blank line
        visible when (ServiceCode.Quantity)
            two column distributed
                PrmQuantity
                    label is "Quantity"
                visible when (DisplayRemainingQuantity)
                    DerivedRemainingQuantityOrdered
                        label is "QuantityRemaining"
                        display as text
        two column distributed
            PrmUnitCost
                label is "UnitCost"
            visible when (ServiceCode.Amount)
                DerivedRemainingAmountInUse
                    label is "AmountRemaining"
                    display as text
            visible when (ServiceCode.Quantity)
                BaseCost
                    display as text
