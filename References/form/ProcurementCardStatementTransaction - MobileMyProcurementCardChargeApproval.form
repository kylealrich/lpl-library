MobileMyProcurementCardChargeApproval is a Form
    title is "ProcurementCardCharges"
    Layout
        display as text
            Merchant
                label is "Merchant"
                bold
            ItemCharge
                label is "ChargeAmount"
                bold
                raise red alert when (LimitExceeded)
                    mouse over text is "ChargeAmountExceedsSingleTransactionCardLimit"
            ProcurementCardStatementTransaction.Company
                label is "Company"
            TransactionDate
                label is "TransactionDate"
                bold
            ProcurementCardStatementTransaction.TransactionNumber
                label is "TransactionNumber"
                bold
            Status
                label is "Status"
            button of "ViewAttachment"
                link is AttachmentLink
                display as link
        header2 of "StatementInformation"
            collapsible
                initially collapsed
            display as text
                ProcurementCardStatement
                    label is "Statement"
                DisplayCardNumberAndName
                    label is "CardNumber"
                ProcurementCardStatementTransaction.TransactionNumber
                    label is "TransactionNumber"
        header2 of "Shipping"
            collapsible
                initially collapsed
            display as text
                single column
                    TransactionDate
                    Status
                    DerivedMerchantName
                        no label
                    ProcurementCardStatement.OrderDate
                    PostDate
                    ApprovedDate
            visible when (IsPurchaseOrderCharges)
            display as text
                single column
                    PurchaseOrder
                        label is "P\\ONumber"
                    PurchaseOrderLine
                        label is "P\\OLine"
                    Item
                    ItemDescription
                        no label
                    Vendor
                    Vendor.VendorName
                        no label
                    VendorItem
                    VendorItemDescription
                        no label
                    Quantity
                    VendorBuyUOM
                    VendorBuyUOM.Description
                        no label
                    VendorPriceUOM
                    VendorPriceUOM.Description
                        no label
                    UnitCost
                    ItemTotal
        header2 of "Charge"
            collapsible
                initially collapsed
            single column
                header2 of "ChargeDetail"
                paragraph
                    ItemCharge
                        label is "ChargeAmount"
                        display as text
                paragraph
                    TaxAmount
                        display as text
                paragraph
                    TotalAddOnChargeCost
                        label is "AddOnChargeAmount"
                        display as text
                paragraph
                    CommodityCode
                    CommodityCode.CcDescription
                        no label
                        display as text
                paragraph
                    DiversityCode
                    DiversityCode.Description
                        no label
                        display as text
                paragraph
                    UNSPSCCode
                        label is "U\\N\\S\\P\\S\\C"
                        compact format
                    UNSPSCCode.ShortDescription
                        no label
                        display as text
                paragraph
                    IncomeCode
                    IncomeCode.Description
                        no label
                        display as text
                paragraph
                    Manufacturer
                        label is "ManufacturerInformation"
                        compact format
                    Manufacturer.Description
                        no label
                        display as text
                paragraph
                    ManufacturerNumber
                paragraph
                    MerchantCategoryCode
                paragraph
                    ProcurementCardReasonCode
                        label is "ReasonCode"
                    ProcurementCardReasonCode.Description1
                        no label
                        display as text
                    ProcurementCardReasonCode.Description2
                        no label
                        display as text
                paragraph
                    Merchant.TaxID
                        label is "TaxID"
                        display as text
                paragraph
                    TaxIndicator
                visible when (IsNotPurchaseOrderCharges)
                    paragraph
                        DistributionCompanyAndCode
                            compact format
                        DistributionCompanyAndCode.DistributionCode.Description
                            no label
                            display as text
