ChangePasswordUIMenuForm is a Form
    use for action ChangePasswordUIMenu
    title is "ChangePassword"
    disable field options
    Actions
        action is save
    Layout
        single column
            CurrentPassword
                label is "CurrentPassword"
            blank line
            NewPassword
                label is "NewPassword"
            ConfirmNewPassword
                label is "ConfirmNewPassword"
            visible when (EUEnabled)
                DisplayPasswordPolicy
                    label is "Show_Password_Requirements"
                    display as switch
                    when value changed
                        refresh EUPasswordPolicy
            visible when (DisplayPasswordPolicy)
                EUPasswordPolicy
                    label is "PasswordPolicy"
                    display as text
