CustomerRepresentativeQuestionResponseUpdateForm is a Form
    title is "CustomerRepresentativeQuestionResponse"
    Layout
        single column
            CustomerGroupQuestion.QuestionText
                label is number
                use text area of 8 lines
            visible when (CustomerGroupQuestion.HasAttachment)
                paragraph
                    CustomerGroupQuestion.Attachment.File
                        no label
                    button of "View"
                        view CustomerGroupQuestion.Attachment.File
                        display as link
            single column
                text of "<ConditionalAnswerLabel>"
                    italics
            CustomerRepresentativeQuestionAnswer
                label is "<CustomerGroupQuestion.AnswerTextWithRequired>"
                use text area of 8 lines
            visible when (CustomerGroupQuestion.AllowResponseAttachment)
                paragraph
                    visible when (HasResponseAttachment)
                        Attachment.Title
                    Attachment.File
                        label is "<CustomerGroupQuestion.AttachmentTextWithRequired>"
                    visible when (Attachment entered)
                        button of "View"
                            view Attachment.File
                            display as link
