MobileReceivingMain is a Form
    title is "Main"
    Layout
        display as text
            single column
                Company.RepresentativeText
                    label is "Company"
                visible when (DocumentNumberNumeric entered)
                    DocumentNumberNumeric
                        label is "AdjustmentDocumentNumber"
            two column distributed
                PurchaseOrderReceiptLine.MatchDetailKey
                    label is "ItemDetail"
                PurchaseOrderReceiptLine.Item
                    label is "Item"
            single column
                PurchaseOrderLineRel.Item.Description
                    label is "Description"
                PurchaseOrderReceiptLine.ItemType
                    display as text
                PurchaseOrder.Vendor.DerivedVendorNameID
                PurchaseOrderReceipt.ReceivedDate
                    label is "ReceivedDate"
                visible when (SubstituteItemMessage)
                    ItemSubstitution
                        no label
                PurchaseOrderReceiptLine.ShipToLocation.RepresentativeText
                    label is "ReceivingLocation"
                PurchaseOrder.PurchaseFromLocation.RepresentativeText
                    label is "PurchFrom"
                    display as text
                PurchaseOrderBuyerMessage.MessageDate
                    label is "MessageDateAndTime"
                    display as text
                visible when (OverreceivingMessage)
                    OverreceivedQuantity
                        no label
                        display as tag
                            color of red
                blank line
