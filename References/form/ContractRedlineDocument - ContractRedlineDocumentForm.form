ContractRedlineDocumentForm is a Form
    is primary
    propagate as a drill
    title is "ContractRedlineDocument"
    Layout
        display as text
            four column distributed
                column1
                    Contract.RepresentativeText
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                column3
                    Contract.WorkingContractID
                column4
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        header2 of "_"
        single column
            Title
            Description
                use text area of 8 lines
        paragraph
            visible when (HasNonIDMAttachment)
                Attachment.Title
            visible when (DisplayAttachment)
                Attachment.File
                    label is "Attachment"
            visible when (HasNonIDMAttachment)
                button of "View"
                    view Attachment.File
                    display as link
            visible when (UsesIDM)
                TransientAttachment.File
            button of "OpenRedlineDocument"
                visible when (HasIDMAttachment)
                link is external "<DerivedDrillBack>"
                display as link
        single column
            visible when (UsesIDM)
                DerivedIsCheckedOut
                    label is "CheckedOut"
                DerivedVersionNumber
                    label is "AttachmentVersion"
                DerivedCheckOutByName
                    label is "CheckedOutBy"
                DerivedCheckOutTimeStamp
                    label is "CheckedOutDate"
                DerivedLastChangedByName
                    label is "LastModifiedBy"
                DerivedLastChangeTimeStamp
                    label is "LastModifiedDate"
            LatestRevision
                display as text
            CreatedBySupplier
                display as text
