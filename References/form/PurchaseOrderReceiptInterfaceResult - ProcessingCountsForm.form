ProcessingCountsForm is a Form
    Layout
        visible when (RunType.Receivers)
            display as text
                paragraph
                    InterfaceCounts.TotalHeaderCount
                        label is "PurchaseOrdersReceiptsProcessed"
                paragraph
                    InterfaceCounts.PassedHeaderCount
                        label is "Successful"
                paragraph
                    InterfaceCounts.FailedHeaderCount
                        label is "Errors"
                blank line
                single column
                    InterfaceCounts.DetailCount
                        label is "LinesProcessed"
                    InterfaceCounts.AddOnChargeCount
                        label is "AddOnChargesProcessed"
        visible when (RunType.AdjustmentsAndSubstitutions)
            display as text
                paragraph
                    InterfaceCounts.TotalHeaderCount
                        label is "PurchaseOrdersAdjustmentsProcessed"
                    InterfaceCounts.PassedHeaderCount
                        label is "Successful"
                    InterfaceCounts.FailedHeaderCount
                        label is "Errors"
                blank line
                single column
                    InterfaceCounts.DetailCount
                        label is "DetailsProcessed"
