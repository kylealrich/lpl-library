CheckPointContext is a Form
    title is "Checkpoint"
    Layout
        single column
            CheckPoint.JobName
                label is "JobName"
                display only
            CheckPoint.JobKeysHash
                label is "JobKeysHash"
                display only
            Actor
                display only
            create stamp
                label is "Created"
                display only
            update stamp
                label is "LastUpdated"
                display only
            visible when (RequestExists)
                AsyncActionRequest
                    label is "Request"
                    display only
                visible when (TriggerExists)
                    AsyncActionTrigger
                        label is "Trigger"
                        display only
                    AsyncActionTrigger.Status
                        label is "Status"
                        display only
                    AsyncActionTrigger.Result
                        label is "Result"
                        display only
                        use text area of 5 lines
            PendingRestart
                display only
            StatusMessage
                use text area of 4 lines
            visible when (ErrorDecoding)
                text of "<DecodingError>"
                    color of red
