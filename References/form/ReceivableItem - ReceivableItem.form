ReceivableItem is a Form
    is primary
    title is "ReceivableItem<ReceivableItem>"
    Layout
        four column distributed
            column1
                Company
            column2
                ReceivableItem
                    label is "Item"
                    show up to 15 characters
            column3
                Description
                    label is "Description"
                    show up to 20 characters
            column4
                Active
                    label is "Active"
        four column distributed
            column1
                UnitPrice
                    label is "UnitPrice"
                    when value changed
                        refresh Currency
            column2
                Currency
                    label is "Currency"
                    display as required when (UnitPrice entered)
            column3
                UnitOfMeasure
                    label is "UnitOfMeasure"
                    select is ReceivableUnitsOfMeasureSelectList
        header2 of "GlobalLedgerAccount"
        single column
            GeneralLedgerAccount
                label is "GlobalLedgerAccount"
                compact format
            ProcessLevelFinanceCodeBlockOverride
                label is "AllowProcessLevelFinanceCodeBlockOverride"
        header2 of "Tax"
        four column distributed
            column1
                Taxable
                    label is "Taxable"
            column2
                TaxCode
                    label is "TaxCode"
            column3
                ProductTaxCategory
                    label is "ProductTaxCategory"
            column4
                TaxUsageCode
                    label is "TaxUsageCode"
        four column distributed
            visible when (Company.GeneralLedgerCompany.RequireHSNSACCode)
                HSNSACCode
                    label is "HSNSACCode"
            visible when (Company.TaxEntityRel.IsThirdParty)
                UNSPSCCodeGroup.ItemGroup
                    label is "ItemGroup"
                UNSPSCCodeGroup.UNSPSCCode
                    label is "UNSPSCCode"
                    compact format
