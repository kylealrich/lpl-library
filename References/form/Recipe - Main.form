Main is a Form
    Layout
        visible when (not IsRecordExists)
            single column
                paragraph
                    ItemGroup
                        select is KitchenEnabledItemGroups
                        when value changed
                            refresh Item
                            refresh IsItemGroupOrItemBlank
                    ItemGroup.Description
                        no label
                        display as text
                paragraph
                    Item
                        select is RecipeItems
                        when value changed
                            refresh IsItemGroupOrItemBlank
                    Item.Description
                        no label
                        display as text
        single column
            paragraph
                visible when (false)
                    Item.SecondaryUOM
                visible when (IsItemGroupOrItemBlank)
                    BatchYieldQuantity
                        display only
                    BatchYieldUOM
                        display only
                visible when (not IsItemGroupOrItemBlank)
                    visible when (Item.SecondaryUOM not entered)
                        BatchYieldQuantity
                        BatchYieldUOM
                            display only
                    visible when (Item.SecondaryUOM entered)
                        DerivedBatchYieldQuantity
                            label is "BatchYieldQuantity"
                            display only
                        BatchYieldUOM
                            display only
                        SecondaryYieldQuantity
                        SecondaryYieldUOM
                            display only
            paragraph
                ServingSize
                ServingSizeUOM
                    select is ValidItemRecipeUOM
                DerivedServingQuantity
                    label is "TotalServingQuantity"
                    display as text
            Active
            paragraph
                Notes
                    use text area of 4 lines
            visible when (ItemGroup.UseIDMTemplate)
                header3 of "IDM_Options"
                paragraph
                    IDMPrinter
                        select is ActiveIDMPrinter
                    IDMPrinter.Description
                        no label
                        display as text
