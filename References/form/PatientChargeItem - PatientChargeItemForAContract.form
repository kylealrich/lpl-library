PatientChargeItemForAContract is a Form
    Layout
        paragraph
            visible when (not RecordExists)
                Company
                Company.Name
                    no label
                    display as text
            visible when (RecordExists)
                Company.DerivedCompanyDisplay
                    label is "Company"
                    display as text
            Company.GeneralLedgerCompany.Currency
                label is "Currency"
                display as text
        paragraph
            ContractGroup
            Contract
            ContractLine
        single column
            visible when (RecordExists)
                display as text
                    PatientChargeItem.RevenueCenter
                        label is "RevenueCenter"
                    PatientChargeItem.ChargeNumber
                        label is "ChargeNumber"
            visible when (not RecordExists)
                PatientChargeItem.RevenueCenter
                    label is "RevenueCenter"
                    show up to 15 characters
                PatientChargeItem.ChargeNumber
                    label is "ChargeNumber"
                    show up to 15 characters
            PatientChargeItem.Item
                label is "Item"
                display as text
            PriceClass
                select is PriceClasss
            Price
                label is "Price"
