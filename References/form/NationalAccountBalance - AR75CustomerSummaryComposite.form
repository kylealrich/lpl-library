AR75CustomerSummaryComposite is a CompositeForm
    title is "NationalAccountCustomerSummary<CompanyCustomerTitle>"
    context form is AR75CustomerSummaryContext
        background is theme color
    restrict action AddCustomer
    restrict action ClearFilter
    restrict action Create
    restrict action Delete
    restrict action DeleteWithMassUpdateLogic
    restrict action UpdateFilters
    Actions
        action is refresh
            label is "_"
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is AR751Main
    Amounts is a Panel
        list is CompanyCustomerPeriodTotalsRel.NationalCustomerFiscalYearsList
    Trends is a Panel
        form is 751Trends
