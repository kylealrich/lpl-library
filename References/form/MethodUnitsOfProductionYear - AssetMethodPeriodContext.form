AssetMethodPeriodContext is a Form
    Actions
        action is Create
        action is Update
        action is Delete
    Layout
        blank line
        single column
            header3 of "Method<Method>_/<Method.Description>"
        four column
            column1
                Method.MethodType
                    label is "Type"
                    display as text
                Method.Active
                    display as text
            column2
                Method.TotalEstimatedUnits
                    label is "TotalEstimatedUnits"
                    display as text
                Method.TotalActualUnits
                    label is "TotalActualUnits"
                    display as text
        blank line
        three column
            column1
                MethodUnitsOfProductionYear
                    label is "Year"
            column2
                PeriodDepreciationConvention
                    label is "Convention"
            column3
                visible when (not PeriodDepreciationConvention.ActualsOnly)
                    EstimatedYearlyUnitsOfProduction
                        label is "AnnualEstimated"
                visible when (not PeriodDepreciationConvention.EstimatesOnly)
                    ActualYearlyUnitsOfProduction
                        label is "AnnualActual"
        FinanceEnterpriseGroup
        Method
