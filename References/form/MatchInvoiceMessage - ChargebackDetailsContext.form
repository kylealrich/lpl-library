ChargebackDetailsContext is a Form
    Layout
        display as text
            paragraph
                Company
                Company.PayablesCompany.Name
                    no label
                    display as text
            paragraph
                Vendor
                    select is ActiveVendorsByName
                Vendor.VendorName
                    no label
                    display as text
            paragraph
                PayablesInvoice.Invoice
                    label is "Invoice"
                PayablesInvoice.InvoiceAmount.CurrencyAmount
                    label is "Amount"
            visible when (HasChargeback)
                paragraph
                    ChargebackPayablesInvoiceRel.Invoice
                        label is "ChargebackInvoice"
                    ChargebackPayablesInvoiceRel.Suffix
                        no label
                    ChargebackPayablesInvoiceRel.InvoiceAmount
                        label is "Amount"
            visible when (ChargebackPending)
                paragraph
                    PayablesInvoice.Invoice
                        label is "ChargebackInvoice"
                    text of "111"
                        align as label
                    DerivedChargebackAmount
                        label is "Amount"
