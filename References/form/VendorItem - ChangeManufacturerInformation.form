ChangeManufacturerInformation is an ActionForm
    action is ChangeManufacturerInformation
    Layout
        display as text
            two column
                paragraph
                    Item
                    Item.Description
                        no label
                    Item.Description2
                        no label
                paragraph
                    ProcurementGroup
                    ProcurementGroup.Description
                        no label
            two column
                paragraph
                    Item.Manufacturer.ManufacturerCode
                        label is "ItemManufacturerInformation"
                    Item.Manufacturer.ManufacturerDivision
                        no label
                    Item.ManufacturerNumber
                        no label
            two column
                paragraph
                    VendorItem
                    VendorItemDescription
                        no label
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
        visible when (not PrmChangeToItemInformation)
            paragraph
                PrmManufacturer
                    label is "Manufacturer"
                    compact format
                PrmManufacturerNumber
                    label is "ManufacturerNumber"
                    display as required when (VendorGTINInUse)
        visible when (PrmChangeToItemInformation)
            display as text
                paragraph
                    PrmManufacturer
                        label is "CurrentManufacturerInformation"
                        compact format
                    PrmManufacturerNumber
                        no label
        paragraph
            PrmBuyUnitOfMeasure.UnitOfMeasure
                label is "BuyU\\O\\M"
                select is ValidBuyUnitsOfMeasure
            PrmPriceUnitOfMeasure.UnitOfMeasure
                label is "PriceU\\O\\M"
                select is ValidBuyUnitsOfMeasure
        visible when (HasItemManufacturerMismatch)
            single column
                PrmChangeToItemInformation
                    label is "ChangeToItemManufacturerInformation"
        visible when (not PrmChangeToItemInformation)
            single column
                PrmUpdateManufacturerNumberOnItem
                    label is "UpdateManufacturerInformationOnItemAndItemLocations"
            visible when (GTINsExist)
                single column
                    PrmUpdateManufacturerNumberOnGTIN
                        label is "UpdateManufacturerInformationOnGTIN"
