AssetInventoryUpdate is an ActionForm
    action is AssetInventoryUpdate
    Layout
        header2 of "SelectionOptions"
        paragraph
            InvStartDate
                label is "FromInventoryDate"
            InvEndDate
                label is "ToInventoryDate"
        paragraph
            Release
                label is "Update"
        paragraph
            Company
                label is "Company"
                select is Companies
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
        paragraph
            RunGroupGrp
                label is "RunGroup"
                compact format
                select is InventoryRunGroups
        paragraph
            Asset
                select is AllAssets
        header2 of "OutputOptions"
        two column
            LocOption
                label is "Location"
            DivOption
                label is "Division"
            AcctUnitOption
                label is "AccountingUnit"
            TypeOption
                label is "Type\\,Sub"
            AstgrpOption
                label is "AssetGroup"
            AssetOption
                label is "Asset"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AssetInventoryUpdateReport_RDG
            column2 of 25%
                AssetInventoryUpdateReport_XPT
