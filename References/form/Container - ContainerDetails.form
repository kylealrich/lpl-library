ContainerDetails is a Form
    Layout
        header1 of "Capacity"
        paragraph
            ContainerWeightCapacity
                label is "Weight"
        paragraph
            ContainerVolumeCapacity
                label is "Cubic_Volume"
                display as required
                when value changed
                    ContainerLength =  blank
                    ContainerWidth =  blank
                    ContainerHeight =  blank
                    refresh DisplayComputedVolumeCapacity
        visible when (DisplayComputedVolumeCapacity)
            header2 of "Dimensions"
            paragraph
                ContainerLength
                    label is "Length"
                    display as required when (RequireContainerLength)
                    when value changed
                        refresh RequireContainerWidth
                        refresh RequireContainerHeight
                ContainerWidth
                    label is "Width"
                    display as required when (RequireContainerWidth)
                    when value changed
                        refresh RequireContainerLength
                        refresh RequireContainerHeight
                ContainerHeight
                    label is "Height"
                    display as required when (RequireContainerHeight)
                    when value changed
                        refresh RequireContainerWidth
                        refresh RequireContainerLength
