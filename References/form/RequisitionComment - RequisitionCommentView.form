RequisitionCommentView is a Form
    title is "Requisition<Requisition>Comment"
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action RSSLPLCreate
    restrict action RSSLPLCreateAttachment
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
    Layout
        display as text
            two column distributed
                Company.DerivedCompanyNameID
                    label is "Company"
                Requisition
                    label is "RequisitionNumber"
            blank line
            two column distributed
                CommentType
                    label is "Type"
                CommentTitle
                    label is "Title"
            paragraph
                Attachment.Title
                    label is "Attachment"
                button of icon.attach
                    visible when (HasAttachment)
                    view Attachment.File
            CommentText
                label is "Text"
                use text area of 10 lines
