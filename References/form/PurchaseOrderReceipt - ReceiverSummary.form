ReceiverSummary is a Form
    title is "ReceiverDetail"
    Layout
        paragraph
            PurchaseOrderReceipt
                label is "Receiver"
                display as text
        paragraph
            ReferenceNumber
                display as text
        paragraph
            InvoiceReference
                label is "MatchReference"
                display as text
        paragraph
            ReceivedDate
                label is "ReceivingDateAndTime"
                display as text
        paragraph
            TermCode
                label is "TermsCode"
                display as text
            ProcessLevel
                display as text
        paragraph
            Currency
                display as text
            ReceiptCurrencyConversionRate
                label is "ConvRate"
                display as text
        paragraph
            OpenToMatchExtendedAmount
                label is "AmountToMatch"
                display as text
        paragraph
            MatchedAmount
                label is "AmountMatched"
                display as text
        paragraph
            OpenToMatchQuantityTotal
                label is "QuantityToMatch"
                display as text
        paragraph
            HashQuantityMatched
                label is "QuantityMatched"
                display as text
        paragraph
            Status
                label is "ReceiverStatus"
                display as text
        paragraph
            ShipToLocation
                label is "ReceivingLocation"
                display as text
        paragraph
            PurchaseOrder
                display as text
            PurchaseOrder.PurchaseOrderRevision
                label is "-"
                display as text
            PurchaseOrder.POCode
                display as text
        paragraph
            BillOfLading
                display as text
        paragraph
            Carrier
                display as text
        paragraph
            CreatedBy
                display as text
            first PurchaseOrderReceiptLine set.IntrastatNumber
                display as text
