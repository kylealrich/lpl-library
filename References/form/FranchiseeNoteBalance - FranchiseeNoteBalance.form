FranchiseeNoteBalance is an ActionForm
    action is FranchiseeNoteBalance
    Layout
        paragraph
            Company
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            ChargeGrp
                label is "Charge"
                compact format
                select is NoteBasedCharges
            ChargeGrp.Description
                no label
                display as text
        paragraph
            CurrencyCode
                label is "Currency"
            CurrencyCode.Description
                no label
                display as text
        paragraph
            FrDate
                label is "FromPeriodDate"
            ToDate
                label is "ToPeriodDate"
        blank line
        paragraph
            Customer
                select is CustomerContextCompanyCustomerSelectList
            Customer.Name
                no label
                display as text
        paragraph
            ShipTo
                label is "Ship_To"
            ShipTo.Name
                no label
                display as text
            text of "Or"
            GroupCode
                label is "GroupingCode"
            GroupCode.Description
                no label
                display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                FranchiseeNoteBalanceReport_RDG
            column2 of 25%
                FranchiseeNoteBalanceReport_XPT
