CompareCost is an ActionForm
    action is CompareContractCost
    title is "CompareContractCosts"
    Layout
        paragraph
        single column
            ContractGroup
                display as text
            RepresentativeText
                display as text
        paragraph
            visible when (not ComparePreviousCost)
                CompareContract
                text of "or"
            ComparePreviousCost
            visible when (ComparePreviousCost)
                text of "IfPreviousCostsNotDisplayingRunSetPreviousCostOnContractActionInContractUtilities"
                    italics
        paragraph
            CompareFromDate
                label is "DateRangeForQuantityOrderedCalculation"
            text of "-"
            CompareToDate
                no label
        single column
            ShowZeroDifference
                label is "CreateRecordForLinesWithNoCostDifference"
                    left of field
            visible when (not ComparePreviousCost)
                ShowZeroOrdered
                    label is "CreateRecordForLinesWithNoOrderedQuantity"
                        left of field
                visible when (TierCostsExist)
                    CompareToTier
