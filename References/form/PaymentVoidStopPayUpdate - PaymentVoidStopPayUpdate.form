PaymentVoidStopPayUpdate is an ActionForm
    action is PaymentVoidStopPayUpdate
    Layout
        paragraph
            VendorGroup
        paragraph
            PayGroup
                select is PayGroups
            PayGroup.Name
                no label
                display as text
        blank line
        paragraph
            CashCode
        blank line
        paragraph
            CheckNum
                label is "PaymentNumber"
        blank line
        paragraph
            PaymentCode
                select is CashPayments
        blank line
        paragraph
            UpdateOption
                label is "Update"
        blank line
        paragraph
            SeparateTotalsReport
                label is "SeparateTotalsReport"
        blank line
        paragraph
            HoldCode
                label is "HoldCode"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PaymentVoidStopPayUpdateReport_RDG
                PaymentVoidStopPayTotals_RDG
            column2 of 25%
                PaymentVoidStopPayUpdateReport_XPT
                PaymentVoidStopPayTotals_XPT
