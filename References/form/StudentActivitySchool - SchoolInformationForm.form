SchoolInformationForm is a Form
    title is "SchoolInformation"
    Layout
        three column
            column1
                SchoolLogo.File
                    no label
                    align as label
                    display as full image up to 5 lines
            column2
                display as text
                    paragraph
                        StudentActivityDistrict
                            label is "SchoolDistrict"
                    visible when (SchoolRecordExists)
                        paragraph
                            StudentActivitySchool
                                label is "School"
                visible when (not SchoolRecordExists)
                    paragraph
                        StudentActivitySchool
                            label is "School"
                paragraph
                    StudentActivitySchoolType
                        label is "SchoolType"
                        select is SchoolTypeSelectList
            column3
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    SchoolName
                    Active
                        align as label
                paragraph
                    CurrentPeriod.GeneralLedgerCalendarPeriod
                        label is "CurrentPeriod"
                        select is ClosePeriods
                    visible when (CurrentPeriod.GeneralLedgerCalendarPeriod entered)
                        CurrentPeriod.GeneralLedgerCalendarPeriod.Date
                            label is "PeriodEndDate"
                            display as text
        header2 of "Defaults"
        blank line
        three column
            column1
                paragraph
                    DefaultAccountingEntity
                        label is "AccountingEntity"
                paragraph
                    DefaultBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                paragraph
                    ReceiptDocumentTemplate
                        label is "ReceiptTemplate"
            column2
                display as text
                    paragraph
                        DefaultAccountingEntity.Name
                            no label
                            align as label
                    paragraph
                        DefaultBankAccount.Description
                            no label
                            align as label
                    paragraph
                        ReceiptDocumentTemplate.ReceiptDocumentTemplateGroup.Title
                            no label
                            align as label
            column3
                paragraph
                    DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                paragraph
                    StudentActivityBackOfficeFields.VendorGroup
                        label is "VendorGroup"
                paragraph
                    LastReceiptNumber
                    AllowReceiptNumberOverride
        single column
            paragraph
                DefaultAccounting
                    label is "Account"
                    compact format
        header3 of "1099ReportingInformation"
        single column
            paragraph
                StudentActivityBackOfficeFields.PayablesCompany
                    label is "PayablesCompany"
                StudentActivityBackOfficeFields.ProcessLevel
                    label is "ProcessLevel"
        header3 of "CurrentAddress"
        blank line
        Address
