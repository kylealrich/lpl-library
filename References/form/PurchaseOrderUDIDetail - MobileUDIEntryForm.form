MobileUDIEntryForm is a Form
    title is "UDIDetail"
    Actions
        action is save and close
            action icon is save
            label is "_"
    Layout
        display as text
            two column distributed
                column1
                    PurchaseOrderReceiptLineRel.ItemDescriptionCardViewDisplay
                        label is "Item"
                column2
                    PurchaseOrderReceiptLineRel.PurchaseOrderReceiptLine
                        label is "Line"
        two column distributed
            GTIN
                label is "GTIN"
                show up to 10 characters
            visible when (PurchaseOrderReceiptLineRel.IsSerialRequiredAtReceipt)
                UOM
        visible when (not PurchaseOrderReceiptLineRel.IsSerialRequiredAtReceipt)
            two column distributed
                Quantity
                    label is "Quantity"
                UOM
        two column distributed
            ManufacturerNumber
                show up to 10 characters
            Manufacturer.ManufacturerCode
            ManufacturingDate
                label is "ManufacturingDate"
            Manufacturer.ManufacturerDivision
        two column distributed
            Lot
                label is "Batch\\/\\Lot"
                show up to 10 characters
            ExpirationDate
                label is "ExpirationDate"
        single column
            SerialNumber
                label is "Serial"
                show up to 10 characters
            DerivedUDI
                label is "UDI"
                display as text
