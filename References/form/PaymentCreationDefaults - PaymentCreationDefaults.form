PaymentCreationDefaults is a Form
    is primary
    title is "PaymentCreationDefaults"
    Layout
        header2 of "Main"
        two column distributed
            paragraph
                VendorGroup
                VendorGroup.Description
                    no label
                    display as text
            paragraph
                PayGroup
                    select is PayGroups
                PayGroup.Name
                    no label
                    display as text
        two column distributed
            paragraph
                BankTransactionCode
                    select is CashPayments
                    when value changed
                        refresh UseForPaymentClearingCreation
                BankTransactionCode.Description
                    no label
                    display as text
            paragraph
                PayablesProcessGroup
                    label is "ProcessGroup"
                    select is ProcessGroups
                PayablesProcessGroup.Description
                    no label
                    display as text
        paragraph
            CashCode
                show up to 12 characters
                when value changed
                    refresh UseForPaymentClearingCreation
            CashCode.Description
                no label
                display as text
        paragraph
            text of "Or"
                bold
        paragraph
            CashCodeGroup
                label is "CashCodeGroup"
                select is CashCodeGroup
                when value changed
                    refresh UseForPaymentClearingCreation
            CashCodeGroup.Description
                no label
                display as text
        two column distributed
            column1
                SuppressNoPaymentError
            column2
                visible when (not UseForPaymentClearingCreation)
                    CombineOutputByAccount
        header2 of "SelectOptions"
        two column distributed
            column1
                PaymentDate
                    label is "UseCurrentDateForPaymentDate"
                PaymentDays
                    label is "PaymentAdjustmentDays"
                visible when (UseForPaymentClearingCreation)
                    CreatePrenot
                        label is "CreatePrenotifications"
                DocCurrency
                    label is "DocumentCurrency"
                UseAp150SortOpt
                    label is "UseCashRequirementsSortOptions"
                visible when (not UseForPaymentClearingCreation)
                    InclFaxEmail
                        label is "IncludeFaxAndEmail"
            column2
                EffectiveDate
                    label is "UseCurrentDateForEffectiveDate"
                EffectiveDays
                    label is "EffectiveDateAdjustmentDays"
                visible when (UseForPaymentClearingCreation)
                    PrintRemit
                        label is "PrintRemittance"
                visible when (UseForPaymentClearingCreation)
                    BacsSerialNbr
                        label is "B\\A\\C\\SSerialNumber"
                    PrintComments
                    SendBankType
                        label is "ElectronicTransferBankType"
                visible when (not UseForPaymentClearingCreation)
                    InclComments
        visible when (UseForPaymentClearingCreation)
            header2 of "OutputOptions"
            two column distributed
                column1
                    CreateLabelsOpt
                        label is "CreateLabels"
                    BalancedTape
                        label is "BalancedFile"
                    ImmediateOriginName
                column2
                    Format
                    Healthcare
