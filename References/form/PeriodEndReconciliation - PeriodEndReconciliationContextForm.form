PeriodEndReconciliationContextForm is a Form
    title is "PeriodReconciliationForPeriod<PeriodEndReconciliation.GeneralLedgerClosePeriod>:_<PeriodEndReconciliation.GeneralLedgerClosePeriod.PeriodName>"
    Layout
        two column distributed
            column1
                paragraph
                    ReconciliationAccountStructure
                    ReconciliationAccountStructure.Description
                        no label
                        display as text
                visible when (LevelType.Group)
                    paragraph
                        ReconciliationGroup
                            display only
                        ReconciliationGroupMethod
                            display as text
                visible when (LevelType.NonAccount)
                    paragraph
                        NonAccountReconciliation
                            display only
                visible when (IsAccountWithinGroup)
                    paragraph
                        ParentPeriodEndReconciliation.ReconciliationGroup
                            display only
                visible when (LevelType.Account)
                    paragraph
                        ReconciliationCodeBlock
                            form is ReconciliationCodeBlockDisplay
                        ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                            no label
                            display as text
                        Currency
                            no label
                            display as text
                visible when (IsAccountWithinGroup)
                    visible when (HasUnpostedGLTransactions)
                        paragraph
                            UnpostedTransactionsErrorMessage
                                no label
                                display as tag
                                    color of red
                    visible when (ShowCreateAmortizationButton)
                        paragraph
                            button of "Amortizations"
                                link is Amortizations
                    visible when (PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType.Cash)
                        visible when (RelatedBankStatement entered)
                            paragraph
                                button of "<RelatedBankStatement>"
                                    link is RelatedBankStatement
                                    label is "BankStatement"
                                    display as link
                                RelatedBankStatementDate
                                    label is "StatementDate"
                                    display as text
                                DetailAmount
                                    label is "BankStatementBalance"
                                    display as text
                                button of "StatementBalances"
                                    link is BankStatementBalances
                                    display as link
                visible when (IsIndependentGroupOrAccountWithinIndependentGroup)
                    single column
                        Status
                            display as tag
                                color of blue when (Status.Open)
                                color of gray when (Status.InProcess)
                                color of yellow when (Status.PendingApproval)
                                color of green when (Status.Closed)
                        visible when (ViewableByAuditor)
                            visible when (LevelType.Group)
                                ViewableByAuditorMessage
                                    no label
                                    display as tag
                                        color of green
                visible when (IsConsolidatedGroupStandaloneOrNonAccount)
                    paragraph
                        Status
                            display as tag
                                color of blue when (Status.Open)
                                color of gray when (Status.InProcess)
                                color of yellow when (Status.PendingApproval)
                                color of green when (Status.Closed)
                        visible when (not LevelType.NonAccount)
                            PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType
                                display as text
                    visible when (IsStandaloneAccount)
                        visible when (PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType.Cash)
                            visible when (RelatedBankStatement entered)
                                paragraph
                                    button of "<RelatedBankStatement>"
                                        link is RelatedBankStatement
                                        label is "BankStatement"
                                        display as link
                                    RelatedBankStatementDate
                                        label is "StatementDate"
                                        display as text
                                    button of "StatementBalances"
                                        link is BankStatementBalances
                                        display as link
                    visible when (RequiresDetailDocumentations)
                        paragraph
                            RequiredDocumentationErrorMessage
                                no label
                                display as tag
                                    color of red
                    visible when (HasUnpostedGLTransactions)
                        paragraph
                            UnpostedTransactionsErrorMessage
                                no label
                                display as tag
                                    color of red
                    visible when (GroupHasUnpostedGLTransactions)
                        paragraph
                            UnpostedTransactionsErrorMessage
                                no label
                                display as tag
                                    color of red
                    visible when (ViewableByAuditor)
                        paragraph
                            ViewableByAuditorMessage
                                no label
                                display as tag
                                    color of green
                    visible when (HasAccountCommentsAndAttachments)
                        paragraph
                            button of "AccountCommentsAndAttachments"
                                link is AccountComments
                                display as link
                    visible when (IsStandaloneAccount)
                        visible when (ShowCreateAmortizationButton)
                            paragraph
                                button of "Amortizations"
                                    link is Amortizations
            column2
                visible when (IsConsolidatedGroupStandaloneNonAccountOrAccountWithinIndependentGroup)
                    visible when (LevelType.Account)
                        paragraph
                            LedgerAmount
                                label is "LedgerAmount"
                                display as text
                            PriorPeriodLedgerAmount
                                label is "PriorPeriodAmount"
                                display as text
                        ReconcilingAmount
                            display as text
                        visible when (HasUnpostedPeriodEndDistributions)
                            UnpostedDistributionAmount
                                display as text
                        visible when (PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType.Cash)
                            OpenBankTransactionsAmount
                                display as text
                        visible when (HasUnpostedBankStatementDistributions)
                            UnpostedBankStatementDistributionsAmount
                                display as text
                        DetailAmount
                            label is "<DerivedDetailAmountLabel>"
                            display as text
                        OutOfBalance
                            display as text
                            raise yellow alert when (IsOutOfBalance)
                                mouse over text is "ReconciliationIsOutOfBalance"
                    visible when (IsConsolidatedGroup)
                        paragraph
                            GroupLedgerAmount
                                label is "LedgerAmount"
                                display as text
                            PriorPeriodGroupLedgerAmount
                                label is "PriorPeriodAmount"
                                display as text
                        ReconcilingAmount
                            display as text
                        visible when (HasUnpostedGroupPeriodEndDistributions)
                            UnpostedGroupDistributionAmount
                                display as text
                        visible when (PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType.Cash)
                            OpenGroupBankTransactionsAmount
                                display as text
                        visible when (HasUnpostedGroupBankStatementDistributions)
                            UnpostedGroupBankStatementDistributionsAmount
                                display as text
                        GroupDetailAmount
                            label is "<DerivedDetailAmountLabel>"
                            display as text
                        OutOfBalance
                            display as text
                            raise yellow alert when (IsOutOfBalance)
                                mouse over text is "ReconciliationIsOutOfBalance"
                    visible when (LevelType.NonAccount)
                        NonAccountBalance
                        ReconcilingAmount
                            display as text
                        DetailAmount
                            label is "<DerivedDetailAmountLabel>"
                            display as text
                        OutOfBalance
                            display as text
                            raise yellow alert when (IsOutOfBalance)
                                mouse over text is "ReconciliationIsOutOfBalance"
