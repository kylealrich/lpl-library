TransactionPurge is an ActionForm
    action is TransactionPurge
    Layout
        two column
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            Archive
                label is "ArchiveRecords"
        single column
            InvoiceHeader
                label is "TransactionBatchRecords"
        blank line
        header2 of "Transactions"
        single column
            text of "Select_one_or_more_of_the_following_options"
        two column distributed
            column1
                PaymentDate
                    label is "Payments-PostCutoffDate"
                InvoiceDate
                    label is "Transactions-PostCutoffDate"
                DistribDate
                    label is "Distributions-PostCutoffDate"
            column2
                NoticeDate
                    label is "PaymentNoticeWorkRecords-CutoffDate"
                CommentDate
                    label is "Customer\\/\\OrderComments-CutoffDate"
                TranCommentDate
                    label is "TransactionComments-CutoffDate"
        header2 of "Customers"
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        blank line
        paragraph
            MajClass
                label is "MajorClass"
                select is MajorClass
            MajClass.Description
                no label
                display as text
        paragraph
            MinClass
                label is "MinorClass"
                select is MinorClass
            MinClass.Description
                no label
                display as text
        paragraph
            CreditAnlyst
                label is "CreditAnalyst"
                select is CreditAnalyst
            CreditAnlyst.Name
                no label
                display as text
        paragraph
            Salesman
                label is "SalesRepresentative"
                select is SalesReps
            Salesman.Name
                no label
                display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                TransactionPurgeReport_RDG
            column2 of 25%
                TransactionPurgeReport_XPT
