RSSLPLRequisitionSpreadAddOnChargeForm is a Form
    title is "RequisitionSpreadAddOnCharge"
    Layout
        three column distributed
            column1
                paragraph
                    AddOnCharge
                        label is "AddOnCharge"
                        select is AddOnChargesWithSpreadList
                    AddOnCharge.Description
                        no label
                        display as text
                TransientZeroCost
                    label is "ZeroCost"
            column2
                AddOnChargePercent
                    label is "Rate"
                SpreadMethod
            column3
                EnteredAddOnChargeAmount
                    label is "Amount"
                display as text
                    paragraph
                        CalculatedSpreadAmount
                            label is "Spread"
                        SpreadDifference
                            label is "Difference"
        header2 of "ProcessFlags"
        three column distributed
            paragraph
                visible when (false)
                    TransientTaxEntity
                visible when (DisplayTaxInfo)
                    Taxable
                    visible when (Taxable)
                        TaxCode
                            label is "Add-OnCostTax"
                            select is TaxCodesForEntity
                        Accrual
                            display as text
            Summarize
                label is "Summary"
            paragraph
                PrintOnRequisition
                AddOnCharge.LandedAddOnCharge
                    label is "Landed"
                    display as text
        header2 of "VendorInformation"
        three column distributed
            paragraph
                visible when (DisplayVendor)
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
                visible when (DisplayPurchaseFrom)
                    PurchaseFromLocation
                TransientCurrency
                    label is "Currency"
        visible when (not AddOnCharge.LandedAddOnCharge)
            single column
                visible when (DisplayAccounting)
                    PostingAccount
                        label is "Account"
                        compact format
