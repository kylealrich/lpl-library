AccountComposite is a CompositeForm
    is primary
    propagate as a drill
    title is "<FinanceEnterpriseGroup.AccountLabel>_<Account>_<AccountDescription>"
    context form is AccountForm
    Main is a Panel
        title is "Main"
        form is MainForm
    UserFields is a Panel
        form is UserFieldsForm
    ValidSubAccountsList is a Panel
        title is "SubAccounts"
        visible when (ValidSubAccounts entered)
        list is SubAccountRel.SubAccountListForAccount
    SubAccountsList is a Panel
        title is "SubAccounts"
        visible when (ShowSubAccountPanel)
        list is AllSubAccountsRel.SubAccountListForAccount
    Attachments is a Panel
        title is "Attachments<DerivedAcountAttachmentsCount>"
        list is AccountAttachment set.Attachments
