CompanyAtAGlance is a Form
    title is "FinanceCompany<Company.Name>"
    Layout
        single column
            paragraph
                Company
                Company.GeneralLedgerCompany.Name
                    no label
                    display as text
            paragraph
                FinanceGroup
                    label is "FinanceGroup"
                FinanceGroup.Description
                    no label
                    align as label
                    display as text
        blank line
        single column
            Company.GeneralLedgerCompany.Currency
                label is "BaseCurrency"
                display as text
        blank line
