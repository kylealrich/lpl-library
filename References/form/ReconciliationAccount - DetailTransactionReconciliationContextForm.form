DetailTransactionReconciliationContextForm is a Form
    title is "DetailTransactionReconciliation"
    Layout
        visible when (HasNonFinishedTriggers)
            NonFinishedTriggersErrorMessage
                display as tag
                    color of red
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        visible when (LevelType.Group)
            paragraph
                ReconciliationGroup
                    display only
                ReconciliationGroupMethod
                    display as text
        visible when (LevelType.NonAccount)
            paragraph
                NonAccountReconciliation
                    display only
                Description
                    no label
                    display as text
        visible when (IsAccountWithinGroup)
            paragraph
                ParentReconciliationAccount.ReconciliationGroup
                    display only
        visible when (LevelType.Account)
            paragraph
                ReconciliationCodeBlock
                    form is ReconciliationCodeBlockDisplay
                ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
                Currency
                    no label
                    display as text
        visible when (CurrentReconciliationPeriod entered)
            paragraph
                CurrentReconciliationPeriod
                    label is "Period"
                    display as text
                    compact format
                CurrentReconciliationPeriod.PeriodName
                    no label
                    display as text
        visible when (CurrentReconMatchNumber entered)
            paragraph
                CurrentMatchedAmount
                    display as text
        blank line
