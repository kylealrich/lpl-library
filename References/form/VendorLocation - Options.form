Options is a Form
    Layout
        header2 of "Invoice"
        paragraph
            ValidateCertificationDate
                label is "ValidateCertificationDate"
            InvoiceRoutingCategory
            InvoiceRoutingCategory.Description
                no label
                display as text
        header2 of "Payment"
        two column distributed
            paragraph
                TermsCode
                    label is "PaymentTerms"
                TermsCode.Desc1
                    no label
                    display as text
            paragraph
                InvoiceGroup
        two column distributed
            paragraph
                CashCode
                CashCode.Description
                    no label
                    display as text
            paragraph
                DiscountCode
                DiscountCode.Description
                    no label
                    display as text
        two column distributed
            paragraph
                BankTransactionCode
                    label is "PaymentCode"
                BankTransactionCode.Description
                    no label
                    display as text
            paragraph
                PayImmediately
                    label is "PayImmediately"
                SeparatePayment
                    label is "SeparatePayment"
        header2 of "Codes"
        two column distributed
            column1
                paragraph
                    TaxCode
                        select is TaxCodeFilteredList
                    TaxCode.Description
                        no label
                        display as text
                    TaxUsageCode
            column2
                paragraph
                    visible when (not Vendor.ValidateDiversityDates)
                        DiversityCode
                            label is "DefaultDiversityCode"
                        DerivedDiveristyDescription
                            no label
                            display as text
                    visible when (Vendor.ValidateDiversityDates)
                        DiversityCode
                            label is "DefaultDiversityCode"
                            display as text
                        DerivedDiveristyDescription
                            no label
                            display as text
                    visible when (Vendor.ValidateDiversityDates)
                        visible when (DiversityCode entered)
                            button of "ChangeDiversityCode"
                                link is DefaultDiversityCodes
                                display as link
                        visible when (DiversityCode not entered)
                            button of "SetDefaultDiversityCode"
                                link is DefaultDiversityCodes
                                display as link
        header2 of "Returns"
        four column distributed
            ReplaceGoods
                label is "ReplaceGoods"
            ShipOrHold
                label is "ShipOrHoldGoods"
            WriteOffAmount
                label is "MinimumClaimAmount"
            paragraph
                VendorClaimType
                visible when (VendorClaimType.Chargeback)
                    VendorClaimHoldCode
                        label is "VendorClaimsChargebackHold"
        two column distributed
            column1
                header2 of "ProcurementCard"
                paragraph
                    UseProcurementCard
                        label is "UseProcurementCard"
                    visible when (UseProcurementCard)
                        MaskedProcurementCard
                            display as text
                        button of "Add_\\/UpdateProcurementCard"
                            action is UpdateProcurementCard
                            display as link
                    visible when (HasProcurementCard)
                        visible when (not UseProcurementCard)
                            text of "<ProcurementCardUncheckMessage>"
                                bold
                                color of red
            column2
                header2 of "E\\D\\I"
                paragraph
                    EDINumber
                    ERSCapable
                        label is "ERSCapable"
                    EDIAutoRelease
                        label is "E\\D\\IInvoiceAutomaticRelease"
                    visible when (ERSCapable)
                        paragraph
                            InvoiceReference
                                label is "E\\R\\SInvoiceReference"
        header2 of "Global"
        two column distributed
            column1
                paragraph
                    ExternalAccountingEntity
            column2
                paragraph
                    ExternalLocation
