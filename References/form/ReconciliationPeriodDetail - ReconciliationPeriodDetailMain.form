ReconciliationPeriodDetailMain is a Form
    Layout
        two column distributed
            column1
                ReferenceNumber
                Description
                paragraph
                    TransactionDate
                    visible when (DetailType.Amortization)
                        ReconciliationDetail.PostingDate
                PeriodAmount
                visible when (ReconcilingItemReasonCodeRequired)
                    ReconciliationReason
            column2
                visible when (not DetailType.Amortization)
                    paragraph
                        Recurring
                paragraph
                    StartPeriod
                        label is "StartPeriod"
                        compact format
                    StartPeriod.PeriodName
                        no label
                        display as text
                visible when (not Recurring)
                    paragraph
                        EndPeriod
                            label is "EndPeriod"
                            compact format
                        EndPeriod.PeriodName
                            no label
                            display as text
                    paragraph
                        PeriodTerm
        visible when (not DetailType.Amortization)
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                Attachment.File
            paragraph
                visible when (HasReportDocument)
                    button of "ViewReport"
                        view ReportDocument.Document
        paragraph
            visible when (MultipleDetailsExistForHeader)
                visible when (DetailType.Amortization)
                    button of "<DetailType>Schedule"
                        link is MainReconciliationRecord
                        display as link
                visible when (not DetailType.Amortization)
                    button of "All<DetailType>"
                        link is MainReconciliationRecord
                        display as link
            visible when (HasDetailHeaderCommentsAndAttachments)
                button of "AllCommentsAndAttachments"
                    link is AllComments
                    display as link
