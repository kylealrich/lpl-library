CurrentSelectedLinesForm is a CompositeForm
    title is "MatchedTransactions"
    context form is CurrentSelectedLinesContextForm
        background is theme color
    restrict action SelectTransaction
    restrict action UnselectTransaction
    restrict action MatchTransaction
    Actions
        action is ReconcileSelectedMatchedTransactions
            label is "ReconcileMatchedTransaction"
            hide when invalid
        action is FlagMatchedTransactionsAsPending
            hide when invalid
        action is UnreconcileSelectedMatchedTransactions
            label is "UnreconcileMatchedTransactions"
            hide when invalid
        action is UnmatchSelectedTransactions
            label is "UnmatchTransactions"
            hide when invalid
        action is UnmatchAndMarkPendingAsUnreconciled
            hide when invalid
        action is open
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    MatchedTransactions is a Panel
        list is BankStatementReconciliation descendants.MatchedTransactionDetailsList
            helper list is OpenReconciliationDetailsByAccountRel.ReconciliationTransactionHelperList
                action is AddToMatchNumber
                    invoked.PrmReconMatchNumber = BankStatementReconciliation
    MatchedSecondaryTransactions is a Panel
        visible when (HasSecondaryReconciliationTransactions)
        list is BankStatementReconciliation descendants.MatchedSecondaryTransactionDetailsList
