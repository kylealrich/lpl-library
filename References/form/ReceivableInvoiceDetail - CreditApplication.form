CreditApplication is a CompositeForm
    title is "CreditApplication<InvoiceNumberTitle>"
    context form is CreditApplicationContextForm
        background is theme color
    Actions
        action is UpdateApplicationGeneralLedgerDates
            action icon is edit
            label is "UpdateGlobalLedgerDates"
            hide when invalid
        navigation is CreditApplicationFormOnLeftNav
            action icon is preview
        action is previous record
            label is "_"
        action is next record
            label is "_"
    InvoiceApplicationNA is a Panel
        visible when (not CompanyCustomerRel.NationalAccountIndicator.No)
        list is DebitTransactionsForNationalAccountRel.CreditApplicationList
    InvoiceApplication is a Panel
        list is DebitTransactionsForCustomerRel.CreditApplicationList
    PendingSummarizeApplications is a Panel
        title is "SelectedSummarizeApplications"
        visible when (SummarizeDetailInvoiceHasApplicationSelect)
        list is ReceivableInvoiceRel.ReceivableApplicationSelectForThisInvoiceRel.ReviewReceivableApplicationSelectList
    PendingApplications is a Panel
        title is "SelectedApplications"
        visible when (HasReceivableApplicationSelect)
        list is ReceivableApplicationSelectRel.ReviewReceivableApplicationSelectList
    PriorSummarizeCreditApplications is a Panel
        title is "PriorSummarizeCreditApplications"
        visible when (SummarizeDetailInvoiceHasCreditApplicationInvoice)
        list is ReceivableCreditApplicationInvoiceRel.ReviewCreditMemoApplications
    PriorCreditApplications is a Panel
        visible when (InvoiceDetailAllowSummarizeShowPriorCreditApplications)
        list is CreditMemoReceivableApplicationRel.ReviewCreditMemoApplications
    PriorWriteOffs is a Panel
        visible when (HasReceivableApplicationAdjustments)
        list is ReceivableApplicationAdjustmentRel.ReviewReceivableApplicationAdjustmentList
