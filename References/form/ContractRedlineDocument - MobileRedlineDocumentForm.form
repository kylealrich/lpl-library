MobileRedlineDocumentForm is a Form
    title is "RedlineDocument"
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            paragraph distributed
                Contract
                Contract.Supplier.SupplierName
        single column
            Title
            Description
                use text area of 8 lines
        paragraph
            visible when (HasNonIDMAttachment)
                Attachment.Title
            visible when (DisplayAttachment)
                Attachment.File
                    label is "Attachment"
            visible when (UsesIDM)
                TransientAttachment.File
            button of "OpenRedlineDocument"
                visible when (NotForApproverOrSupplierUpdate)
                link is external "<DerivedDrillBack>"
                display as link
            button of "ViewRedlineDocument"
                visible when (ForApproverOrSupplierUpdate)
                link is external "<DerivedIDMDocumentURL>"
                display as link
        single column
            visible when (UsesIDM)
                DerivedIsCheckedOut
                    label is "CheckedOut"
                DerivedVersionNumber
                    label is "AttachmentVersion"
                DerivedCheckOutByName
                    label is "CheckedOutBy"
                DerivedCheckOutTimeStamp
                    label is "CheckedOutDate"
                DerivedLastChangedByName
                    label is "LastModifiedBy"
                DerivedLastChangeTimeStamp
                    label is "LastModifiedDate"
            LatestRevision
                display as text
            CreatedBySupplier
                display as text
