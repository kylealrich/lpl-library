InlineCreateSettlementFeeForm is a Form
    title is "IntercompanyBillingSettlementFee"
    Layout
        single column
            IntercompanyBillingSettlementHeader.SettlementID
                label is "SettlementID"
                display as text
        blank line
        single column
            Type
                display as text
        visible when (Type.Payable)
            paragraph
                IntercompanyBillingSettlementHeader.PayablesCompany
                    display as text
                IntercompanyBillingSettlementHeader.PayablesCompany.Name
                    no label
                    display as text
            paragraph
                IntercompanyBillingSettlementHeader.PayablesCashCode
                    display as text
                IntercompanyBillingSettlementHeader.PayablesCashCode.Description
                    no label
                    display as text
        visible when (Type.Receivable)
            paragraph
                IntercompanyBillingSettlementHeader.ReceivableCompany
                    display as text
                IntercompanyBillingSettlementHeader.ReceivableCompany.Name
                    no label
                    display as text
            paragraph
                IntercompanyBillingSettlementHeader.ReceivableCashCode
                    display as text
                IntercompanyBillingSettlementHeader.ReceivableCashCode.Description
                    no label
                    display as text
        paragraph
            BankTransactionCode
            BankTransactionCode.Description
                no label
                display as text
        single column
            Description
        blank line
        paragraph
            Amount
            Currency
                no label
                display as text
        visible when (Type.Payable)
            paragraph
                PayableCurrencyTable
                    label is "CurrencyTable"
                PayableCurrencyTable.Description
                    no label
                    display as text
            paragraph
                PayableExchangeRate
                    label is "ExchangeRate"
            paragraph
                PayableCurrencyAmount
                    label is "InCompanyBase"
                    display as text
                IntercompanyBillingSettlementHeader.PayablesCompany.GeneralLedgerCompany.Currency
                    no label
                    display as text
        visible when (Type.Receivable)
            paragraph
                ReceivableCurrencyTable
                    label is "CurrencyTable"
                ReceivableCurrencyTable.Description
                    no label
                    display as text
            paragraph
                ReceivableExchangeRate
                    label is "ExchangeRate"
            paragraph
                ReceivableCurrencyAmount
                    label is "InCompanyBase"
                    display as text
                IntercompanyBillingSettlementHeader.ReceivableCompany.Currency
                    no label
                    display as text
        blank line
        single column
            Account
                compact format
        blank line
        single column
        visible when (HasCashLedgerTransaction)
            button of "ViewPayment"
                link is CashLedgerTransactionLink
                indent
                display as link
