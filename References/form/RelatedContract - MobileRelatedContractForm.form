MobileRelatedContractForm is a Form
    title is "RelatedReference"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            paragraph distributed
                Contract
                Contract.Supplier.SupplierName
                    label is "Supplier"
            single column
                RelatedContractType
                    label is "RelatedReferenceType"
                RelatedContractID
                    label is "RelatedReference"
                RelatedContractDescription
                    label is "ReferenceDescription"
                    use text area of 4 lines
            paragraph
                Company.Name
                    label is "Company"
            paragraph
                Vendor.VendorName
                    label is "Vendor"
            paragraph
                Supplier.SupplierName
                    label is "Supplier"
            single column
                visible when (RelatedSupplierName entered)
                    RelatedSupplierName
                        label is "OrOtherSupplierName"
            paragraph
                ManufacturerCodeDivision
                    label is "ManufacturerCodeAndDivision"
                    compact format
                ManufacturerCodeDivision.Description
                    no label
                    display as text
            single column
                WorkingContract
