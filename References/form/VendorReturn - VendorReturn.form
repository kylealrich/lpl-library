VendorReturn is a CompositeForm
    is primary
    title is "VendorReturn"
    context form is VendorReturnContext
        background is theme color
    Actions
        action is Added.Authorize
            action icon is apply
            hide when invalid
        action is RequestRMA
            label is "RequestRMAFromSupplier"
            hide when invalid
        action is AuthorizedByVendor.Ship
            action icon is release
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
        action is previous record
            label is "_"
        action is next record
            label is "_"
    Main is a Panel
        form is Main
    Authorize is a Panel
        form is Authorize
    ShipTo is a Panel
        form is ShipTo
    Shipment is a Panel
        visible when (not Status.Added)
        form is Shipment
    Comments is a Panel
        list is VendorReturnComment set.VendorReturnComments
    Lines is a Panel
        list is VendorReturnLinesRel.Lines
