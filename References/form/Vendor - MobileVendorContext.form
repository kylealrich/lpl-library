MobileVendorContext is a Form
    title is "VendorContext"
    Layout
        two column table
            column1
                Logo.File
                    no label
                    align as label
                    display as full image up to 5 lines
                        missing image is missingpicture96px
                blank line
            column2
                display as text
                    VendorGroup
                    VendorGroup.Description
        display as text
            two column table
                column1
                    Vendor
                    VendorClass
                    VendorStatus
                        label is "Status"
                column2
                    VendorName
                        label is "VendorName"
                    VendorClass.Description
                    blank line
            single column
                effective date
        paragraph
        display as text
            single column
                visible when (IsOnHold)
                    text of "VendorIsOnHold"
                        bold
                        color of red
                visible when (DisplayInvalidText)
                    text of "InvalidVATRegistrationNumber"
                        bold
                        color of red
