RSSLPLAddNewSpecialServiceToRequisition is an ActionForm
    action is RSSLPLAddNewSpecialServiceToRequisition
    submit label is "Ok"
    title is "Add_a_Special_or_Service_Item"
    Layout
        header1 of "ItemInformation"
        paragraph
            PrmItemType
                no label
                display as horizontal radio buttons
                when value changed
                    refresh PrmLineVendor
        two column distributed
            column1
                paragraph
                    PrmItem
                        display as required
                visible when (DisplayVendorItem)
                    paragraph
                        PrmVendorItem
                            display as required when (RequesterRel.RequireVendorItem)
            column2
                paragraph
                    PrmItemDescription
                        display as required
                paragraph
                    visible when (DisplayRequestedDeliveryDate)
                        PrmRequestedDeliveryDate
                            display as required when (RequesterRel.RequireRequestedDeliveryDate)
        two column distributed
            column1
                paragraph
                    visible when (not PrmItemType.ServiceByAmount)
                        PrmQuantity
                paragraph
                    PrmUOM
                        display as required
                visible when (DisplayCostOption)
                    paragraph
                        PrmCostOption
                            when value changed
                                PrmLinePurchaseTaxable =  RequesterRel.RequisitionRel.PurchaseTaxable
                                    when (not PrmCostOption.NoCharge)
                                PrmLinePurchaseTaxCode =  RequesterRel.RequisitionRel.PurchaseTaxCode
                                    when (not PrmCostOption.NoCharge)
                                PrmLinePurchaseTaxable =  PrmLinePurchaseTaxable.TaxExempt
                                    when (PrmCostOption.NoCharge)
                                PrmLinePurchaseTaxCode =  blank
                                    when (PrmCostOption.NoCharge)
            column2
                paragraph
                    PrmTransactionUnitCost
                        display as required
                paragraph
                    visible when (RSSLPLDisplayCurrencyCode)
                        PrmTransactionCurrencyCode
                paragraph
                    visible when (RSSLPLDisplayAllocationPriorityLevel)
                        paragraph
                            PrmLineAllocationPriorityLevel
                                initial value is RSSLPLAllocationPriorityLevelRel.AllocationPriorityLevel
                            PrmLineAllocationPriorityLevel.Description
                                no label
                                display as text
                    visible when (RSSLPLDisplayPriority)
                        PrmLineAllocationPriority
        header1 of "PurchasingInformation"
            collapsible
                initially collapsed
            two column distributed
                column1
                    visible when (false)
                        PrmVendorRequiredForSpecials
                            initial value is RequesterRel.RequireVendorforSpecialItems
                        PrmVendorRequiredForServices
                            initial value is RequesterRel.RequireVendorforServiceItems
                    visible when (DisplayVendor)
                        paragraph
                            visible when (PrmItemType.Special)
                                PrmLineVendor
                                    display as required when (PrmVendorRequiredForSpecials)
                            visible when (PrmItemType.ServiceByAmount)
                                PrmLineVendor
                                    display as required when (PrmVendorRequiredForServices)
                            visible when (PrmItemType.ServiceByQuantity)
                                PrmLineVendor
                                    display as required when (PrmVendorRequiredForServices)
                    paragraph
                        PrmManufacturer
                            compact format
                            display as required when (RequesterRel.RequireManufacturer)
                    paragraph
                        visible when (DisplayTaxInfo)
                            PrmLinePurchaseTaxable
                    paragraph
                        visible when (DisplayGTIN)
                            PrmItemGTIN
                column2
                    visible when (DisplayPurchaseFrom)
                        paragraph
                            PrmLineVendorPurchaseFrom
                                select is NonRemitToActivePurchaseFromLocations
                    paragraph
                        PrmManufacturerNumber
                            display as required when (RequesterRel.RequireManufacturerNumber)
                    paragraph
                        visible when (DisplayTaxInfo)
                            PrmLinePurchaseTaxCode
                            PrmLinePurchaseTaxCode.Description
                                no label
                                display as text
        header1 of "Classes_andCodes"
            collapsible
                initially collapsed
            two column distributed
                column1
                    visible when (DisplayPurchaseClasses)
                        paragraph
                            PrmMajorPurchasingClass
                                display as required when (RequesterRel.RequireMajorPurchaseClasses)
                            PrmMajorPurchasingClass.Description
                                no label
                                display as text
                    paragraph
                        visible when (DisplayPOCode)
                            PrmLinePOCode
                                display as required when (RequesterRel.RequirePOCode)
                            PrmLinePOCode.Description
                                no label
                                display as text
                    paragraph
                        visible when (RequesterRel.DisplayCommodityCode)
                            PrmLineCommodityCode
                                display as required when (RequesterRel.RequireCommodityCodeDisplay)
                column2
                    visible when (DisplayPurchaseClasses)
                        paragraph
                            PrmMinorPurchasingClass
                                display as required when (RequesterRel.RequireMinorPurchaseClasses)
                            PrmMinorPurchasingClass.Description
                                no label
                                display as text
                    paragraph
                        visible when (DisplayBillCode)
                            PrmLineConsignCode
                    paragraph
                        visible when (DisplayStrategicSourcingUsed)
                            PrmLineSourcingEventRequired
        header1 of "Miscellaneous"
            collapsible
                initially collapsed
            paragraph
                visible when (RSSLPLDisplayFromCompany)
                    PrmLineFromCompanyLocation.FromCompany
                        label is "DeliverFromCompany"
                        display as required
                    PrmLineFromCompanyLocation.FromCompany.Name
                        no label
                        display as text
                visible when (RSSLPLDisplayFromLocation)
                    PrmLineFromCompanyLocation.FromLocation
                        label is "DeliverFromLocation"
                        select is RQInventoryLocations
                        display as required
                    PrmLineFromCompanyLocation.FromLocation.Name
                        no label
                        display as text
            paragraph
                PrmDeliverTo
                    display as required when (RequesterRel.RequireDeliverTo)
        header1 of "Distributions"
            collapsible
                initially collapsed
            paragraph
                visible when (DisplayDistributionAccount)
                    PrmLineDistribution
                        compact format
            visible when (DisplayAssetDisplayOption)
                paragraph
                    PrmAsset
                        display as required when (RequesterRel.RequireAsset)
                    PrmAssetTemplate
                        display as required when (RequesterRel.RequireAssetTemplate)
                    PrmAssetTemplate.Description
                        no label
                        display as text
            visible when (DisplayGLEncumbranceReference)
                paragraph
                    PrmGLEncumbranceReference
                        display as required when (RequesterRel.RequireGLEncumbranceReference)
        header1 of "Comments"
            collapsible
                initially collapsed
            paragraph
                PrmLineCommentText
            paragraph
                PrmLineAttachment
