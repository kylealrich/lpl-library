BookPurge is an ActionForm
    action is BookPurge
    Layout
        single column
            FinanceEnterpriseGroup
        paragraph
            Book
                select is InactiveBooks
            Book.Description
                no label
                display as text
        paragraph
            Company
            Company.GeneralLedgerCompany.Name
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            Asset
            Asset.Description
                no label
                display as text
        paragraph
            Purge
            Archive
        paragraph
            PrintReport
                label is "Print"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                BookPurgeReport_RDG
            column2 of 25%
                BookPurgeReport_XPT
