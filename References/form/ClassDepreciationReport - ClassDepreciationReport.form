ClassDepreciationReport is an ActionForm
    action is ClassDepreciationReport
    Layout
        paragraph
            Period
                label is "Period"
            YrEndDate
                label is "YearEndDate"
        blank line
        paragraph
            AmbBook
                label is "Book"
            AmbBook.Description
                no label
                display as text
            text of "Or"
            BookGroup
                label is "BookGroup"
                select is BookGroups
            BookGroup.Description
                no label
                display as text
        paragraph
            Company
                label is "Company"
                select is Companies
            Company.CompanyName
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        blank line
        single column
            TransactionDimension
                label is "ClassDimensions"
                compact format
        blank line
        paragraph
            AssetType
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        blank line
        single column
            PageBreak
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ClassDepreciationReportReport_RDG
            column2 of 25%
                ClassDepreciationReportReport_XPT
