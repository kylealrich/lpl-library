CloseTask is an ActionForm
    action is CloseTask
    title is "CloseTask:<TaskName>"
    Layout
        header3 of "EnterYourActualNumberOfHoursToCompleteThisTask"
        single column
            PrmActualHours
                label is "Effort"
        visible when (ClosingLate)
            header3 of "EnterYourReasonForCompletingTheTaskLate"
            single column
            visible when (CloseManagementGroup.CloseLateReasonCodeRequired)
                paragraph
                    reason code
                    reason code.Description
                        no label
                        display as text
            PrmLateComment
                label is "Comment"
                use text area of 8 lines
        visible when (RequireSupportingDoco)
            header3 of "YouAreRequiredToAttachSupportingDocumentation"
        visible when (SupportingDocoIsOptional)
            header3 of "AddNotes,Attachment,OrURLForSupportingDocumentation"
        single column
            PrmDialogue
                label is "Notes"
                use text area of 8 lines
            PrmAttachment
                label is "Attachment"
            PrmLinkToDocumentation
                label is "URL"
