LineResponseForm is a Form
    title is "LineResponse"
    Layout
        header2 of "Line<SourcingEventLine>Details"
        visible when (NoAdditionalLineResponseInfo)
            four column distributed
                text of "UseBackOnBrowserToReturnToEventLineResponses"
                    italics
                    color of blue
                visible when (SupplierLineAttachmentsExist)
                    button of "ViewAttachments"
                        link is ViewSupplierAttachments
                        display as link
                visible when (SupplierLineCommentsExist)
                    button of "ViewComments"
                        link is ViewSupplierComments
                        display as link
        display as text
            visible when (LineDescEntered)
                single column
                    SourcingEventLine.Description
                        use text area
            visible when (LineDescEntered)
                visible when (not LineDescEntered)
                    ItemForSelect
                    VendorForSelect
            four column distributed
                SourcingEventLine.ItemNumber
                    label is "Item"
                SourcingEventLine.ItemDescription
                visible when (SourcingEventLine.OutputType.PO)
                    SourcingEventLine.RequestedDeliveryDate
                SourcingEventLine.OutputType
            four column distributed
                visible when (not AmountService)
                    SourcingEventLine.Quantity
                    SourcingEventLine.UOM.UnitOfMeasure
                visible when (SourcingEventLine.ItemType.Special)
                    UOMConversion
                        label is "UOMConversion"
                    LowUOMCode
                        label is "LowUOMCode"
                SourcingEventLine.CommodityCode.RepresentativeText
                visible when (NotifiedSupplier.SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                    visible when (SourcingEventLine.GTINEntered)
                        SourcingEventLine.GlobalTradeItemNumber.RepresentativeText
                            label is "GTIN"
            visible when (SourcingEventLine.ShipTo entered)
                paragraph
                    SourcingEventLine.ShipTo.PostalAddressForPurchaseOrder.Country
                        label is "ShipToAddress"
                    SourcingEventLine.ShipTo.PostalAddressForPurchaseOrder.DeliveryAddress.AddressLine1
                        no label
                    SourcingEventLine.ShipTo.PostalAddressForPurchaseOrder.Municipality
                        no label
                    SourcingEventLine.ShipTo.PostalAddressForPurchaseOrder.StateProvince
                        no label
                    SourcingEventLine.ShipTo.PostalAddressForPurchaseOrder.PostalCode
                        no label
            visible when (LineMfgInfoEntered)
                paragraph
                    SourcingEventLine.ManufacturerInformation.Manufacturer.ManufacturerCode
                        label is "ManufacturerCode"
                    SourcingEventLine.ManufacturerInformation.Manufacturer.ManufacturerDivision
                        label is "Division"
                    SourcingEventLine.ManufacturerInformation.ManufacturerNumber
                        label is "ManufacturerNumber"
            visible when (ShowLowestBidAmount)
                paragraph
                    SourcingEventLine.LowestBidDisplay
                        label is "LowestBidAmount"
                    SourcingEventResponse.CurrencyCode
        single column
            visible when (ShowLowestMessageText)
                text of "<SourcingEventLine.DisplayLowestMessage>"
                    bold
        paragraph
            visible when (ShowNoChargeMessageText)
                text of "<SourcingEventLine.DisplayNoChargeMessage>"
                    bold
        header2 of "EnterLine<SourcingEventLine>ResponseInformation"
        paragraph
            text of "<ComparableText>"
                header2
                bold
        paragraph
            visible when (SourcingEventLine.DisplayVendorItem)
                VendorItem
                    select is SupplierVendorItemSelect
            visible when (SourcingEventLine.DisplayVendorItem)
                VendorItemDescription
            visible when (not SourcingEventLine.DisplayVendorItem)
                VendorItemDescription
                    label is "ServiceDescription"
            visible when (DisplayGTINAndVendorItem)
                text of "Or"
            visible when (DisplayGlobalTradeItemNumber)
                GlobalTradeItemNumber
                    label is "GTIN"
                    select is SelectForSupplier
        single column
            visible when (SourcingEventLine.OutputType.PO)
                DeliveryDate
        paragraph
            CurrencyResponseUnitPrice
                label is "UnitPrice"
            text of "Or"
            visible when (not SourcingEventLine.OutputType.Service)
                ResponseAmount.NoCharge
                text of "Or"
            ResponseAmount.NoBid
            visible when (ResponseAmount.NoBid)
                visible when (DisplayNoBidReason)
                    text of "Reason:"
                    NoBidReason
                        no label
                        select is NoBidReasonSelect
                visible when (AlternatesAllowed)
                    text of "AlternateResponseCanStillBeEnteredWhenMainItemIsNoBid"
        paragraph
            visible when (not AmountService)
                Quantity
            visible when (ShowFullQuantityMessage)
                text of "<SourcingEventLine.DisplayQuantityMessage>"
                    bold
            SourcingEventLine.UOM.UnitOfMeasure
                display as text
            PackagingString
                label is "UOMDetail"
            visible when (SourcingEventLine.ItemType.Special)
                UOMConversion
                    label is "UOMConversion"
                LowUOMCode
                    label is "LowUOMCode"
        paragraph
            visible when (LineExists)
                CurrencyExtendedPrice
                    label is "ExtendedAmount"
                    display as text
                visible when (LineHasAddOnChargeAmount)
                    ResponseTotalAOCInResponseCurrency
                        label is "AOC"
                        display as text
                    NetUnitPriceInResponseCurrency
                        label is "NetUnitPrice"
                        display as text
                    TotalResponseInResponseCurrency
                        label is "TotalBid"
                        display as text
        single column
            ResponseComments
                use text area of 5 lines
        visible when (AlternatesAllowed)
            header3 of "EnterAlternateResponses"
            paragraph
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].VendorItem
                    select is SupplierVendorItemSelect
                visible when (BuyerDisplayGTIN)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].GlobalTradeItemNumber
                        select is SelectForSupplier
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].Quantity
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].UOM.UnitOfMeasure
                visible when (SourcingEventLine.OutputType.PO)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].DeliveryDate
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].CurrencyResponseUnitPrice
            two column distributed
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].VendorItemDescription
                    label is "Description"
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[1].ResponseComments
                    label is "Comments"
                    use text area of 4 lines
            blank line
            paragraph
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].VendorItem
                    select is SupplierVendorItemSelect
                visible when (BuyerDisplayGTIN)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].GlobalTradeItemNumber
                        select is SelectForSupplier
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].Quantity
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].UOM.UnitOfMeasure
                visible when (SourcingEventLine.OutputType.PO)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].DeliveryDate
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].CurrencyResponseUnitPrice
            two column
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].VendorItemDescription
                    label is "Description"
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[2].ResponseComments
                    label is "Comments"
                    use text area of 4 lines
            blank line
            paragraph
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].VendorItem
                    select is SupplierVendorItemSelect
                visible when (BuyerDisplayGTIN)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].GlobalTradeItemNumber
                        select is SelectForSupplier
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].Quantity
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].UOM.UnitOfMeasure
                visible when (SourcingEventLine.OutputType.PO)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].DeliveryDate
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].CurrencyResponseUnitPrice
            two column
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].VendorItemDescription
                    label is "Description"
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[3].ResponseComments
                    label is "Comments"
                    use text area of 4 lines
            blank line
            paragraph
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].VendorItem
                    select is SupplierVendorItemSelect
                visible when (BuyerDisplayGTIN)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].GlobalTradeItemNumber
                        select is SelectForSupplier
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].Quantity
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].UOM.UnitOfMeasure
                visible when (SourcingEventLine.OutputType.PO)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].DeliveryDate
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].CurrencyResponseUnitPrice
            two column
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].VendorItemDescription
                    label is "Description"
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[4].ResponseComments
                    label is "Comments"
                    use text area of 4 lines
            blank line
            paragraph
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].VendorItem
                    select is SupplierVendorItemSelect
                visible when (BuyerDisplayGTIN)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].GlobalTradeItemNumber
                        select is SelectForSupplier
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].Quantity
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].UOM.UnitOfMeasure
                visible when (SourcingEventLine.OutputType.PO)
                    AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].DeliveryDate
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].CurrencyResponseUnitPrice
            two column
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].VendorItemDescription
                    label is "Description"
                AlternateResponseArray.AlternateResponseOccurs.AlternateResponseDetails[5].ResponseComments
                    label is "Comments"
                    use text area of 4 lines
