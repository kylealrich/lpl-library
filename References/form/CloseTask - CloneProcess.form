CloneProcess is an ActionForm
    action is CloneProcess
    title is "Copy<TaskName>"
    Layout
        visible when (IsTopLevel)
            header3 of "NewCloseProcess"
            single column
                CloneProcessName
                    label is "Name"
        visible when (IsSummaryLevel)
            header3 of "NewSubProcess"
            single column
                CloneProcessName
                    label is "Name"
        single column
            WhatToClone
                label is "WhatToCopy"
        visible when (not IsTopLevel)
            header3 of "SelectParent"
            two column
                NewParent
                    label is "Parent"
                    select is ProcessSelect
                NewParent.TaskName
                    no label
                    display as text
