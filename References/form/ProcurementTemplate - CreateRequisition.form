CreateRequisition is an ActionForm
    action is CreateRequisition
    Layout
        paragraph
            PrmCompany
                label is "Company"
        paragraph
            PrmRequester
                label is "Requester"
        paragraph
            PrmRequestingLocation
                label is "RequestingLocation"
            PrmRequestingLocation.Name
                no label
                display as text
        paragraph
            PrmFromCompanyLocation.FromCompany
                label is "FromCompany"
            PrmFromCompanyLocation.FromCompany.Name
                no label
                display as text
        paragraph
            PrmFromCompanyLocation.FromLocation
                label is "FromLocation"
            PrmFromCompanyLocation.FromLocation.Name
                no label
                display as text
        paragraph
            PrmDate
                label is "RequestedDeliveryDate"
        paragraph
            SavedRequisition
                no label
                display as text
            SavedRequisitionCompany
                no label
                display as text
        visible when (false)
            paragraph
                TransientNewRequisition
