AddOnChargeForm is a Form
    is primary
    title is "AddOnCharge"
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        two column
            AddOnCharge
            Description
        two column
            AddOnChargeType
                label is "Type"
            TrackType
        two column
            SpreadMethod
            visible when (SpreadMethod.Rate)
                AddOnChargePercent
                    label is "Rate"
        three column
            Taxable
            visible when (Taxable)
                paragraph
                    TaxCode
                    TaxCode.Description
                        no label
                        display as text
                paragraph
                    ProductTaxCategory
        paragraph
            Summarize
            PrintOnPO
            LandedAddOnCharge
                label is "Landed"
            Active
        single column
            PostingAccount
                label is "PostingAccount"
                compact format
            AddOnChargeDifferenceAccount
                label is "DifferenceAccount"
                compact format
        paragraph
            SearchDescription
                use text area of 4 lines
        single column
            visible when (OneSourceGeneric)
                OneSourceTaxCallOverride
            visible when (OneSourceTaxCallOverride.UseCommodityCode)
                CommodityCode
            visible when (OneSourceTaxCallOverride.UseUNSPSCCode)
                UNSPSCCode
                    compact format
            visible when (TaxEntityRel.ThirdParty.VertexOSeries)
                UNSPSCCode
                    compact format
                HSNSACCode
