MobileRecallNoticeActivity is a CompositeForm
    title is "NoticeActivity"
    context form is MobileRecallActivityContext
    show panel control on left
    restrict action Pending.SupplierPortalCreate
    restrict action Pending.RecallPortalCreate
    restrict action Pending.ThirdPartyCreate
    restrict action Pending.SupplierPortalCreateItemProposal
    restrict action Pending.SupplierDelete
    restrict action Pending.RequesterCreateItemProposal
    restrict action Pending.Create
    restrict action CopyNotice
    TaskActivityByProduct is a Panel
        visible when (NonManualTasksExist)
        list is RecallNoticeTaskProduct set.MobileRecallNoticeTaskActivity
    ManualTaskActivity is a Panel
        visible when (ManualTasksExist)
        list is RecallNoticeTask set.MobileRecallNoticeTaskOnlyActivity
    ActionSummary is a Panel
        title is "ResolutionSummary"
        visible when (HasResolutions)
        list is RecallProductItemAction set.MobileRecallProductItemActionSummary
