VendorGroupCopy is an ActionForm
    action is VendorGroupCopy
    Layout
        paragraph
            FromVendorGrp
                label is "FromVendorGroup"
                select is VendorGroups
            ToVendorGrp
                label is "ToVendorGroup"
        single column
            CopyVendorFlag
                label is "CopyVendors"
        paragraph
            FromVendor
                select is VendorName
            ThruVendor
                label is "ToVendor"
                select is VendorName
        single column
            VendorClass
                select is VendorClass
            CopyHoldFlag
                label is "CopyHoldCodes"
            CopyVenlocFlag
                label is "CopyVendorLocations"
            CopyUserFlds
                label is "CopyUserFields"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                VendorGroupCopyReport_RDG
            column2 of 25%
                VendorGroupCopyReport_XPT
