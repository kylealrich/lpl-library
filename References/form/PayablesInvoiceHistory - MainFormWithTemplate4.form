MainFormWithTemplate4 is a Form
    title is "Invoice"
    Layout
        three column distributed
            column1
            column2
                header3 of "InvoiceStatus"
                Status
                    display as text
            column3
                header3 of "InvoiceBalance"
                InvoiceAmount
                    display as text
                TotalDistributionAmount
                    label is "TotalDistributions"
                    display as text
                TotalPaymentAmount
                    label is "TotalPayments"
                    display as text
        two column distributed
            column1
                header3 of "InvoiceInformation"
                paragraph
                    InvoiceType
                visible when (InvoiceType.MatchPrepayment)
                    paragraph
                        MatchPrepaymentMethod
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Vendor
                        label is "*\\Vendor"
                    Vendor.VendorName
                        no label
                        display as text
                visible when (not InvoiceType.Prepayment)
                    paragraph
                        PayablesInvoiceHistory.Invoice
                            label is "InvoiceNumber"
                        PayablesInvoiceHistory.Suffix
                            no label
                            display as text
                    paragraph
                        InvoiceDate
                            label is "*\\InvoiceDate"
                    paragraph
                        DueDate
                            label is "*\\DueDate"
                    paragraph
                        InvoiceAmount
                        InvoiceCurrency
                            no label
                        InvoiceCurrency.Description
                            no label
                            display as text
                visible when (InvoiceType.Prepayment)
                    paragraph
                        PayablesInvoiceHistory.Invoice
                            label is "PrepaymentNumber"
                        PayablesInvoiceHistory.Suffix
                            no label
                            display as text
                    paragraph
                        InvoiceDate
                            label is "*\\PrepaymentDate"
                    paragraph
                        DueDate
                            label is "*\\DueDate"
                    paragraph
                        InvoiceAmount
                            label is "PrepaymentAmount"
                        InvoiceCurrency
                            no label
                        InvoiceCurrency.Description
                            no label
                            display as text
