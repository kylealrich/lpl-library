        three column
            column1
                paragraph
                    ItemGroup
                    ItemGroup.Description
                        no label
                        display as text
                paragraph
                    ItemGTIN
                    text of "_"
                    FullDescription
                        label is "Description"
            column2
                paragraph
                    Item
                        show up to 10 characters
                    Item.Description
                        no label
                        display as text
                    Item.Description2
                        no label
                        display as text
                paragraph
                    UnitOfMeasure.UnitOfMeasure
                    visible when (not ItemGTINExists)
                        GTINStructure
                    visible when (ItemGTINExists)
                        GTINStructure
