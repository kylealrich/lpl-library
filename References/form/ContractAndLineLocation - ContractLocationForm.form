ContractLocationForm is a Form
    title is "HeaderLocation"
    Actions
        action is ChangeToLineLevelClinicalLocation
            hide when invalid
        action is ChangeToHeaderLevelClinicalLocation
            hide when invalid
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is save and close
    Layout
        display as text
            paragraph
                ContractGroup
                Contract
                Contract.Description
        paragraph
            ContractAndLineLocation.Company
            ContractAndLineLocation.Company.Name
                no label
                display as text
        paragraph
            ContractAndLineLocation.Location
            ContractAndLineLocation.Location.Name
                no label
                display as text
        visible when (not Contract.ServicePurchaseType)
            paragraph
                ContractAndLineLocation.RequestingLocation
                ContractAndLineLocation.RequestingLocation.Name
                    no label
                    display as text
        visible when (ContractGroup.EnableTaxOverrideLocations)
            paragraph
                visible when (not Contract.ServicePurchaseType)
                    Taxable
                TaxCode
        visible when (Contract.EnableClinicalSystemUseLocations)
            visible when (CanMaintain)
                paragraph
                    ClinicalSystemUse
                    visible when (ClinicalSystemUse)
                        LineLevel
            visible when (not CanMaintain)
                paragraph
                    ClinicalSystemUse
                        display as text
                    LineLevel
                        display as text
