MobileOptionsForm is a Form
    title is "Options"
    Layout
        header3 of "Tolerances"
        two column table
            column1
                CostTolerancePercentage
                    label is "Cost"
                QuantityTolerancePercentage
                    label is "Quantity"
                KitItem.Item.StockUOM
                    label is "StockUOM"
                    display as text
            column2
                ZeroQuantity
                ZeroCost
                ContiguousProcess
        header3 of "Scheduling"
        single column
            paragraph
                Capacity
                ScheduleIncrement
                    label is "PeriodLength"
            ScheduleFrequency
                no label
        header3 of "Accounts"
        paragraph
            FinishedGoodsVarianceAccount
                label is "VarianceAccount"
                compact format
        paragraph
            ProductionCreditAccount
                label is "ProductionCreditAccount"
                compact format
        paragraph
            BurdenAbsorptionAccount
                label is "BurdenAbsorptionAccount"
                compact format
