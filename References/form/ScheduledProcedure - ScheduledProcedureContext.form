ScheduledProcedureContext is a Form
    Layout
        visible when (RecordExists)
            display as text
                four column distributed
                    column1
                        ItemGroup
                        Company.DerivedCompanyDisplay
                            label is "Company"
                    column2
                        PreferenceCard.RepresentativeText
                        RequestingLocation.RepresentativeText
                    column3
                        ScheduledProcedure
                            label is "ScheduleID"
                        Status
                    column4
                        paragraph
                            visible when (WithRequisition)
                                visible when (HasRequestedRequisitionLine)
                                    button of "<Requisition>"
                                        link is ScheduledProcedureRequisitionRel.RequisitionView
                                        label is "Requisition"
                                        display as link
                                visible when (not HasRequestedRequisitionLine)
                                    Requisition
                            visible when (WithRequisition)
                                ScheduledProcedureRequisitionRel.DerivedStatusMessage
                                    label is "RequisitionStatus"
                        visible when (HasNonStockLines)
                            button of "ViewNonStockPickList" with icon.pdf-file
                                visible when (IsForInventoryProcessing)
                                link is NonStockPicklistNav
                                display as link
                    visible when (HasShippedQuantity)
                        MessageShippedQuantitiesExists
                            no label
                            display as tag
                                color of yellow
        visible when (false)
            TransientOnline
