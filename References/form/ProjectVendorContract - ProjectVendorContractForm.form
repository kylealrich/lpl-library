ProjectVendorContractForm is a Form
    is primary
    title is "<FinanceEnterpriseGroup.ProjectLabel>VendorContract"
    Layout
        two column
            column1
                paragraph
                    ProjectContract.Project.DisplayProject
                        label is "<FinanceEnterpriseGroup.ProjectLabel>Contract"
                        display as text
                    ProjectContract.Project.Description
                        no label
                        display as text
        two column
            column1
                paragraph
                    Project
                        label is "<FinanceEnterpriseGroup.ProjectLabel>"
                        select is ProjectContract.PostingProjectsRel.ContractPostingProjectSelect
                    Project.Description
                        no label
                        display as text
        two column
            column1
                paragraph
                    ContractGroup
                    ContractGroup.BusinessGroup.Description
                        no label
                        display as text
        two column
            column1
                paragraph
                    Contract
                        label is "VendorContract"
                        select is ContractsByVendor
                    Contract.Name
                        no label
                        display as text
                    visible when (HasContract)
                        button of "Contract"
                            link is Contract
                            display as link
        two column
            column1
                paragraph
                    Contract.MaximumAmount
                        label is "LifetimeMaximumAmount"
                        display as text
                    Contract.AmountRemaining
                        label is "AmountRemaining"
                        display as text
        header4 of "Or"
        two column
            column1
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
                    visible when (HasVendor)
                        button of "Vendor"
                            link is Vendor
                            display as link
        single column
            VendorType
