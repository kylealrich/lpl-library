PurchaseOrderLineCommentActionForm is an ActionForm
    action is Create
    title is "PurchaseOrderLineComment"
    Layout
        display as text
            four column
                Company
                PurchaseOrder
                PurchaseOrderLine
                    label is "Line"
        single column
            CommentTitle
                label is "Title"
        three column
            TransientPrintOnInternalDocuments
            TransientPrintOnReceivingDocument
            TransientPrintOnPurchaseOrder
            TransientPrintOnDeliveryTicket
            TransientInvoiceComments
            TransientDisplayOnlyOnInternalDocuments
            TransientDisplayOnly
            TransientAssetComment
        paragraph
            visible when (TransientPrintOnPurchaseOrder)
                SupplierCanView
            visible when (PurchaseOrder.IssueMethod.Email)
                visible when (TransientPrintOnPurchaseOrder)
                    SendToVendor
        single column
            Attachment.File
            CommentText
                label is "Text"
                use text area
