LinkWithAPVendor is an ActionForm
    action is LinkWithAPVendor
    title is "LinkWithAPVendor"
    Layout
        paragraph
            CreateNewVendor
                label is "CreateNewVendor"
                    left of field
        paragraph
            PayablesVendorGroup
                label is "VendorGroup"
            PayablesVendorGroup.Description
                no label
                display as text
        visible when (not CreateNewVendor)
            paragraph
                PayablesVendor
                    label is "Vendor"
        visible when (CreateNewVendor)
            single column
                VendorName
                SearchName
                LegalName
            paragraph
                VendorClass
                VendorClass.Description
                    no label
                    display as text
            single column
                VendorAddress
