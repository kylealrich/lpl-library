KitInstruction is a Form
    is primary
    title is "Instructions"
    Layout
        display as text
            four column distributed
                paragraph
                    ItemGroup
                    ItemGroup.Description
                        no label
                paragraph
                    KitItem.Company
                    KitItem.Company.Name
                        no label
                paragraph
                    KitItem.InventoryLocation
                    KitItem.InventoryLocation.Name
                        no label
                paragraph
                    KitItem.Item
                    KitItem.Item.Description
                        no label
                    KitItem.Item.Description2
                        no label
            three column
                KitItem.MakeCode
                    label is "MakeCode"
                KitItem.Active
                visible when (KitItem.IsMakeToOrder)
                    KitItem.Item.StockUOM
                        label is "UOM"
            visible when (KitItem.IsMakeToOrder)
                three column
                    KitItem.Notes
                    KitItem.ProcedureCode
                        label is "Procedure"
                    KitItem.OrderSize
                        label is "StandardOrderSize"
        blank line
        single column
            KitInstruction.InstructionLine
                label is "InstructionLine"
                display as text
            Instruction
                label is "Instructions"
