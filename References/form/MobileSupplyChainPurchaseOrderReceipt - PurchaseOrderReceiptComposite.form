PurchaseOrderReceiptComposite is a CompositeForm
    title is "PurchaseOrderReceipt"
    context form is PurchaseOrderReceiptContext
        background is theme color
    Actions
        action is ReleaseReceipt
            label is "Release"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    Lines is a Panel
        visible when (not PurchaseOrderHasCatchWeight)
        list is MobileSupplyChainPurchaseOrderReceiptLine set.PurchaseOrderReceiptLine
    LinesWithCatchWeight is a Panel
        title is "Lines"
        visible when (PurchaseOrderHasCatchWeight)
        list is MobileSupplyChainPurchaseOrderReceiptLine set.PurchaseOrderReceiptCatchWeightLine
