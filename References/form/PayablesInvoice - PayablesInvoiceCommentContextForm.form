PayablesInvoiceCommentContextForm is a Form
    title is "Invoice"
    Layout
        paragraph
            Company
                label is "PayablesCompany"
                display as text
            Company.Name
                no label
                display as text
        paragraph
            Vendor
                label is "*\\Vendor"
                display as text
            Vendor.VendorName
                no label
                display as text
        paragraph
            Invoice
                label is "*\\InvoiceNumber"
                display as text
        paragraph
            InvoiceDate
                label is "*\\InvoiceDate"
                display as text
        paragraph
            DueDate
                label is "*\\DueDate"
                display as text
            TermsCode
                display as text
            TermsCode.Desc1
                no label
                display as text
        paragraph
            InvoiceAmount.CurrencyAmount
                label is "InvoiceAmount"
                display as text
            InvoiceCurrency
                label is "Currency"
                display as text
