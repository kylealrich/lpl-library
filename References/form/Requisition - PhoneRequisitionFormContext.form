PhoneRequisitionFormContext is a Form
    title is "PFIRequisitionContext"
    restrict action Unreleased.UpdateRequisitionLineFillOrKill
    Layout
        visible when (RecordExists)
            display as text
                three column table
                    column1
                        visible when (RequestingLocation.Picture.File entered)
                            RequestingLocation.Picture.File
                                no label
                                align as label
                                display as full image up to 3 lines
                    column2
                        Company.Name
                            label is "Company"
                    column3
                        RequestingLocation.Name
                            label is "Location"
                paragraph
                    visible when (not IsMyRequisition)
                        Requester.Employee.Name.PreferredFirstAndLastName
                            label is "Requester"
                            header3
                        button of icon.phone
                            link is "tel:<Requester.Employee.EmployeeWorkTelephone>"
                        button of icon.mail
                            link is "mailto:<Requester.Employee.EmployeeWorkEmailAddress>"
                paragraph
                    DerivedRequsitionAmountCurrency
                        label is "Total"
                        header3
