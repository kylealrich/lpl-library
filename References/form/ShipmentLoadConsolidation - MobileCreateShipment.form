MobileCreateShipment is a Form
    title is "ShipmentLoad"
    Layout
        visible when (not RecordExists)
            paragraph
                Company
                    show up to 5 characters
                Company.Name
                    no label
                    display as text
            paragraph
                InventoryLocation
                    show up to 5 characters
                InventoryLocation.Name
                    no label
                    display as text
            paragraph
                Container
                    show up to 5 characters
                    when value changed
                        refresh DerivedNumberOfContainer
                Container.Description
                    no label
                    display as text
            paragraph
                ShipTo
                    label is "DeliverTo"
                    show up to 5 characters
                ShipTo.Name
                    no label
                    display as text
            paragraph
                Vehicle
                    show up to 5 characters
                    when value changed
                        refresh HasVehicle
                        refresh DerivedNumberOfContainer
                        MaxContainer =  blank
                Vehicle.Description
                    no label
                    display as text
                visible when (HasVehicle)
                    DerivedNumberOfContainer
                        label is "MaxNumberOf_Container_Units"
                        display as text
                visible when (not HasVehicle)
                    MaxContainer
                        label is "NumberOf_Container_Units"
                        display as text
                        display as required
            paragraph
                FromShipDate
                ToShipDate
