ProcurementTemplatesFormContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (RecordExists)
                        ProcurementGroup.RepresentativeText
                            display as text
                    visible when (not RecordExists)
                        ProcurementGroup
                            select is ProcurementGroup
                        ProcurementGroup.Description
                            no label
                            display as text
                visible when (RecordExists)
                    ProcurementTemplate
                        label is "TemplateReference"
                        display as text
                visible when (not RecordExists)
                    ProcurementTemplate
                        label is "TemplateReference"
                        select is ProcurementTemplates
                visible when (Locked)
                    Description
                        display as text
                visible when (not Locked)
                    Description
            column2
                visible when (not Locked)
                    FromCompanyLocation.FromCompany
                        label is "FromCompany"
                visible when (Locked)
                    paragraph
                        FromCompanyAndName
                            label is "FromCompany"
                            display as text
                DerivedLocked
                    label is "Locked"
                    display as text
                visible when (not Locked)
                    Active
                visible when (Locked)
                    DerivedActive
                        label is "Active"
                        display as text
            column3
                visible when (not Locked)
                    FromCompanyLocation.FromLocation
                        label is "FromLocation"
                visible when (Locked)
                    FromCompanyLocation.FromLocation
                        display as text
                visible when (RecordExists)
                    visible when (HasContract)
                        Contract
                            display as text
                        AutoUpdateFromContract
                TemplateDocumentNumber
                    label is "DocumentNumber"
                    display as text
        blank line
