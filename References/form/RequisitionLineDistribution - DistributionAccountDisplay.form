DistributionAccountDisplay is a Form
    title is "DistributionDetail"
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is Delete
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        display as text
            two column distributed
                Company
                TransientPostingDate
                    label is "PostingDate"
            paragraph
                DistributionAccount
            visible when (RequisitionLine.DistributionBy.ByAmount)
                paragraph
                    DistributionAmount
                        label is "Amount"
                    Requisition.BaseCurrencyCode
                        no label
            visible when (RequisitionLine.DistributionBy.ByQuantity)
                single column
                    DistributionQuantity
            visible when (RequisitionLine.DistributionBy.ByPercent)
                single column
                    DistributionPercent
            visible when (AssetEntered)
                single column
                    AssetInformation.Asset
            visible when (AssetTemplateEntered)
                single column
                    AssetInformation.AssetTemplate
            visible when (RequisitionLineContractEntered)
                single column
                    Contract
