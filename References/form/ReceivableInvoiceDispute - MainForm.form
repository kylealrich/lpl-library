MainForm is a Form
    Layout
        three column distributed
            column1
                paragraph
                    ReceivableInvoiceDetail.ReceivableInvoiceRel.ReceivableInvoiceType
                        label is "ReceivableInvoiceType"
                        display as text
                paragraph
                    ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                        display as text
                paragraph
                    OriginalCurrency
                        display as text
            column2
                paragraph
                    ReceivableInvoiceDetail.Invoice
                        display as text
                paragraph
                    ReceivableInvoiceDetail.InvoiceAmount.CurrencyAmount
                        label is "DetailTransactionAmount"
                        display as text
                paragraph
                    ReceivableInvoiceDetail.DueDate
                        display as text
            column3
                paragraph
                    ReceivableInvoiceDetail.ReceivableInvoiceRel.InvoiceAmount.CurrencyAmount
                        display as text
                paragraph
                    ReceivableInvoiceDetail.PaymentSeq
                        label is "PaymentSequence"
                        display as text
                paragraph
                    ReceivableInvoiceDispute
                        label is "DisputeSequence"
                        display as text
        visible when (IsOpenDisputes)
            three column distributed
                column1
                    paragraph
                        DisputeCode
                            display as text
                        DisputeCode.Description
                            no label
                            display as text
                    paragraph
                        ResolveDate
                            label is "Date_ofResolution"
                    paragraph
                        visible when (DueDateChangeAllowed)
                            TransientDueDate
                                label is "UpdateDueDate"
                column2
                    paragraph
                        visible when (ReceivableInvoiceDisputeExists)
                            DisputedAmount
                                display as text
                        visible when (not ReceivableInvoiceDisputeExists)
                            DisputedAmount
                    paragraph
                        TransientOverrideDunningProcess
                            label is "OverrideDunningProcess"
                column3
                    paragraph
                        DisputeDate
                            label is "Date_ofDispute"
                    paragraph
                        Description
        visible when (IsClosedDispute)
            three column distributed
                column1
                    paragraph
                        DisputeCode
                            display as text
                        DisputeCode.Description
                            no label
                            display as text
                    paragraph
                        ResolveDate
                            label is "Date_ofResolution"
                            display as text
                column2
                    paragraph
                        DisputedAmount
                            display as text
                    paragraph
                        TransientOverrideDunningProcess
                            label is "OverrideDunningProcess"
                            display as text
                column3
                    paragraph
                        DisputeDate
                            label is "Date_ofDispute"
                            display as text
                    paragraph
                        Description
                            display as text
