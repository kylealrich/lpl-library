StatementReconciliationForm is a CompositeForm
    title is "ReconcileByAccount"
    context form is AccountReconciliationContextForm
        background is theme color
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action SendCorrespondence
    restrict action CreateForecastAccount
    restrict action CreateAccountResource
    Actions
        action is SwitchToListOverListView
            hide when invalid
        action is SwitchToCombinedListView
            hide when invalid
        action is LoadAndReconcile
            label is "LoadAndReconcile"
            hide when invalid
        action is ClearCurrentReconciliationList
            label is "SaveAndClearCurrentReconciliation"
            hide when invalid
        action is ReconcileSelectedTransactions
            label is "ReconcileSelectedTransactions"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    UnmatchedTransactions is a Panel
        title is "UnmatchedTransactions"
        visible when (not UsesListOverListManualReconView)
        list is UnmatchedReconciliationsForAccountRel.AllUnmatchedAccountReconciliations
    UnmatchedTransactionsList is a MultiListPanel
        title is "UnmatchedTransactions"
        visible when (UsesListOverListManualReconView)
        list is UnmatchedReconciliationsForAccountRel.UnmatchedStatementReconciliations
            show 8 lines
        list is UnmatchedReconciliationsForAccountRel.UnmatchedTransactionReconciliations
            show 9 lines
    CurrentSelectedTransactions is a Panel
        list is CurrentReconciliationLinesRel.SelectedAccountReconciliations
            helper list is MatchedReconciliationsForAccountRel.ReconciliationSummaryRecordHelperList
                action is MatchTransaction
    MatchedTransactions is a Panel
        visible when (HasMatchedTransactions)
        list is MatchedReconciliationsForAccountRel.ReconciliationSummaryRecordList
    AllTransactions is a Panel
        list is AllReconciliationsforAccountRel.AllAccountReconciliationTransactions
    ReconciliationVarianceDistributions is a Panel
        visible when (HasNonCashLedgerDistributions)
        list is NonCashLedgerDistributionRel.StatementNonCashLedgerDistributionsList
    CashLedgerReconciledVariances is a Panel
        visible when (HasCashLedgerReconciledVariances)
        list is CashLedgerReconciledVariancesRel.CashLedgerReconciliationAdjustmentList
