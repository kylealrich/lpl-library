ResourceProjectSchedulePeriodMobileContext is a Form
    Layout
        three column table
            column1 of 35%
                DateRange.Begin
                    label is "Begin"
                    display as text
                visible when (HROrganization.first FinanceEnterpriseGroupRel.EnterpriseProjectStructure.LaborDistributionApproval)
                    visible when (first ProjectAssignmentLaborRel.SubmittedActor entered)
                        first ProjectAssignmentLaborRel.DateSubmitted
                            label is "SubmittedOn"
                            display as text
                visible when (not HROrganization.first FinanceEnterpriseGroupRel.EnterpriseProjectStructure.LaborDistributionApproval)
                    visible when (first ProjectAssignmentLaborRel.ApprovalActor entered)
                        first ProjectAssignmentLaborRel.DerivedApprovalActor
                            label is "ApprovedBy"
                            display as text
            column2 of 35%
                DateRange.End
                    label is "End"
                    display as text
                visible when (HROrganization.first FinanceEnterpriseGroupRel.EnterpriseProjectStructure.LaborDistributionApproval)
                    visible when (first ProjectAssignmentLaborRel.ApprovalActor entered)
                        first ProjectAssignmentLaborRel.DerivedApprovalActor
                            label is "ApprovedBy"
                            display as text
            column3 of 30%
                Status
                    no label
                    align as label
                    display as tag
                        color of blue when (IsBlueStatusTag)
                        color of green when (IsGreenStatusTag)
                        color of orange when (IsOrangeStatusTag)
