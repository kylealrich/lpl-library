MobileRecallNoticeReferenceForm is a Form
    title is "Reference"
    called out actions only
    Actions
        action is Create
            action icon is create
            label is "_"
        action is save
            action icon is save
            label is "_"
    Layout
        single column
            RecallNotice.NoticeRepresentativeText
                no label
                display as text
            Description
                use text area
            IdentifierId
            UseAsWorkingId
        paragraph
            Link
            visible when (not HasLink)
                text of "<RecallGroup.LinkExampleText>"
            visible when (HasLink)
                button of "ViewLink"
                    link is external "<Link>"
                    display as link
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        single column
            ReferenceDate
