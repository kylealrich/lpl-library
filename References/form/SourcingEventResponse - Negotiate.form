Negotiate is a Form
    title is "NegotiationInformation"
    suppress standard toolbar
    restrict action Draft.Create
    restrict action Draft.Update
    restrict action Draft.ManualResponse
    restrict action Submitted.DeleteAward
    restrict action Submitted.AwardAllAppendToContract
    restrict action Submitted.AwardAllAppendToPO
    restrict action Submitted.AwardAllNewContract
    restrict action Submitted.AwardAllNewPO
    restrict action Submitted.AssignNonAwardReason
    restrict action Submitted.FinalAward
    restrict action Submitted.CreateOutput
    restrict action Submitted.UnselectForBestAndFinal
    restrict action EnterValidatedPaperBidBond
    restrict action Submitted.ValidateBidBond
    restrict action Withdrawn.ReinstateResponse
    Layout
        two column
            Company
                display as text
            Company.Name
                label is "CompanyName"
                display as text
        three column
            SourcingEvent
                label is "Event#"
                display as text
            SourcingEvent.LastVersionNumber
                no label
                display as text
            SourcingEvent.Name
                label is "EventName"
                display as text
        two column
            NotifiedSupplier.Supplier
                display as text
            NotifiedSupplier.Supplier.SupplierName
                label is "SupplierName"
                display as text
        single column
            NotifiedSupplier.SupplierSourceId.MainContact.FirstAndLastName
                label is "SupplierContact"
                display as text
        blank line
        single column
            NegotiateTermsBox
                label is "Comment"
                display as text
                use text area of 5 lines
        paragraph
            visible when (NegotiatedTermsDocumentEntered)
                blank line
                NegotiatedTermsDocument.Title
                    label is "Attachment"
                    display as text
                button of "View"
                    view NegotiatedTermsDocument.File
                    display as link
