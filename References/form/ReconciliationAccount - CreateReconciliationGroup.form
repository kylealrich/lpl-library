CreateReconciliationGroup is an ActionForm
    action is CreateReconciliationGroup
    title is "ReconciliationGroup"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        paragraph
            ReconciliationGroup
            ReconciliationGroupMethod
        visible when (ReconciliationGroupMethod.Consolidated)
            single column
                Description
                    show up to 100 characters
                Purpose
                    use text area of 3 lines
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                    Priority
                    paragraph
                        ReconciliationAccountGroup
                            select is ReconciliationAccountGroupNoChildren
                        ReconciliationAccountGroup.Description
                            no label
                            display as text
                        visible when (DisplayParentReportGroupStructure)
                            text of "(<ParentReportGroupStructure>)"
                                italics
                    paragraph
                        FinanceTeam
                        FinanceTeam.Description
                            no label
                            display as text
                    RequireSupportingDoco
                        label is "RequiresSupportingDocumentation"
                    Active
                column2
                    ReconciliationAccountType
                    Risk
                    paragraph
                        CloseTask
                            label is "CloseTask"
                            select is TaskSelect
                        CloseTask.TaskName
                            no label
                            display as text
                    paragraph
                        AssignedResource
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    select is ApprovalCodesWithLevels
                    paragraph
                        ReconciliationPolicy
                        ReconciliationPolicy.Description
                            no label
                            display as text
        visible when (ReconciliationGroupMethod.Independent)
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                    paragraph
                        FinanceTeam
                        FinanceTeam.Description
                            no label
                            display as text
                column2
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    select is ApprovalCodesWithLevels
                    paragraph
                        AssignedResource
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
