SecurityClassConsoleEditorForm is a Form
    title is "SecurityClassDetails"
    Layout
        display as text
            header2 of "_"
            two column distributed
                column1
                    SecurityClass
                        raise yellow alert when (InActive)
                            mouse over text is "Inactive"
                        raise green alert when (not InActive)
                            mouse over text is "Active"
                    Description
                column2
                    DerivedLastChange
                        no label
                        display as tag
                            color of blue
                    paragraph
                        button of "Edit"
                            link is EditNav
                        button of "Activate"
                            visible when (InActive)
                            action is Activate
                        button of "Deactivate"
                            visible when (not InActive)
                            action is Deactivate
                        button of "AddToRole"
                            action is AddToRole
                    paragraph
                        button of "ViewRoles"
                            link is RoleSecurityClassNav
                            display as link
            visible when (StandardTemplate)
                paragraph
                    LPL
                        no label
                        display only
                        use text area of 30 lines
            visible when (not StandardTemplate)
                paragraph
                    LPL
                        no label
                        use text area of 30 lines
