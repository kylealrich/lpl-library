CustomerApplicationContext is a Form
    title is "CustomerApplication"
    Layout
        display as text
            paragraph
                Company.RepresentativeText
                    label is "Company"
                Customer.RepresentativeText
                button of "<FilterButtonLabel>"
                    action is UpdateFilters
                visible when (not FilterExists)
                    text of "DefaultViewIncludes_Open_TransactionsAnd_OpenAnd_Unreleased_Payments.Excludes_Historical."
                        bold
                visible when (ReceivableFilterRel.FilterExistsHistoryFlagIncludeHistoryWithOtherFilteredCriteria)
                    text of "FilterExists._Includes_Open,_Unreleased,And_Historical;_WithOtherFilteredCriteria."
                        bold
                visible when (ReceivableFilterRel.FilterExistsHistoryFlagIOnlyShowHistoryWithOtherFilteredCriteria)
                    text of "FilterExists._Includes_Only_Historical.Excludes_OpenAnd_Unreleased;_WithOtherFilteredCriteria."
                        bold
                visible when (ReceivableFilterRel.FilterExistsHistoryFlagNoHistoryWithOtherFilteredCriteria)
                    text of "FilterExists._Includes_Open_TransactionsAnd_OpenAnd_Unreleased_Payments.Excludes_Historical;_WithOtherFilteredCriteria."
                        bold
                visible when (ReceivableFilterRel.FilterExistsHistoryFlagIncludeHistoryWithoutOtherFilteredCriteria)
                    text of "FilterExists._Includes_Open,_Unreleased,And_Historical."
                        bold
                visible when (ReceivableFilterRel.FilterExistsHistoryFlagIOnlyShowHistoryWithoutOtherFilteredCriteria)
                    text of "FilterExists._Includes_Only_Historical.Excludes_OpenAnd_Unreleased."
                        bold
                visible when (ReceivableFilterRel.FilterExistsHistoryFlagNoHistoryWithoutOtherFilteredCriteria)
                    text of "FilterExists._Includes_Open_TransactionsAnd_OpenAnd_Unreleased_Payments.Excludes_Historical."
                        bold
                visible when (not FilterExists)
                    text of "ToSwitchFromDefaultView,Click_FilterButton."
                        bold
