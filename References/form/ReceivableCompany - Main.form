Main is a Form
    Layout
        three column distributed
            column1
                paragraph
                    CustomerGroupField.CustomerGroup
                        label is "*CustomerGroup"
                        select is CustomerGroups
                    CustomerGroupField.CustomerGroup.Name
                        no label
                        display as text
            column2
                paragraph
                    CustomerGroupField.CustomerGroup.Currency
                        label is "CustomerGroupCurrency"
                        display as text
            column3
                paragraph
                    Company.GeneralLedgerCompany.Currency
                        label is "CompanyBaseCurrency"
                        display as text
        paragraph
            MultiCurrencyProcessing
                label is "MultipleCurrencyProcessing"
            CurrencyRateOverride
        paragraph
            PhoneNumber
        paragraph
            FaxNumber
        header2 of "AgingOptions"
        two column distributed
            column1
                AgingMethod
                    label is "DefaultAgingMethod"
                AgePaymentsRule
                    label is "AgePayments"
            column2
                AgeCreditsRule
                    label is "AgeCredits"
                AgeDisputesRule
                    label is "AgeDisputes"
        paragraph
            AgePeriodses.AgePeriods[1]
                label is "AgingPeriods"
            AgePeriodses.AgePeriods[2]
                no label
            AgePeriodses.AgePeriods[3]
                no label
            AgePeriodses.AgePeriods[4]
                no label
            CurrentAgingPeriod
                label is "CurrentDays"
        single column
            ExpandedAgingPeriods
                label is "AdditionalAgingPeriods"
        visible when (ExpandedAgingPeriods)
            paragraph
                AgePeriodses.AgePeriods[5]
                    label is "AgingPeriods"
                AgePeriodses.AgePeriods[6]
                    no label
                AgePeriodses.AgePeriods[7]
                    no label
                AgeFuture
                    label is "FutureDays"
        two column distributed
            column1
                AgingTransactionSequence
                    label is "TransactionSequence"
            column2
                TrasactionAgingDisplayDate
                    label is "DisplayDate"
        header2 of "DocumentTemplateOption"
        paragraph
            UseIDM
                label is default
                    left of field
