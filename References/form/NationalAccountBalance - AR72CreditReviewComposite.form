AR72CreditReviewComposite is a CompositeForm
    title is "NationalAccountCreditTransactionReview<CompanyCustomerTitle>"
    context form is AR72CreditReviewContext
        background is theme color
    restrict action AddCustomer
    restrict action ClearFilter
    restrict action Create
    restrict action Delete
    restrict action UpdateFilters
    Actions
        action is refresh
            label is "_"
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is AR721Main
    Credit is a Panel
        form is Credit
    Activity is a Panel
        form is Activity
    Contact is a Panel
        form is Contact
    Aging is a Panel
        form is StaticAging
    Detail is a Panel
        list is CompanyCustomerRel.OpenTransactionsForCustomerRel.CreditReviewList
    Amounts is a Panel
        list is CompanyCustomerPeriodTotalsRel.NationalCustomerFiscalYearsList
    Trends is a Panel
        form is Trends
