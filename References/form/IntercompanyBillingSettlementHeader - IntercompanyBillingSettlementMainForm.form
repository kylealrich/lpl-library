IntercompanyBillingSettlementMainForm is a Form
    title is "IntercompanyBillingSettlement"
    Layout
        paragraph
            visible when (not RecordExists)
                IntercompanyBillingSettlementHeader.SettlementID
                    label is "SettlementID"
            PaymentDate
            paragraph
                PaymentAmount
                SettlementCurrency
                    no label
                    display as text
        two column distributed
            column1
                header2 of "Payable"
                paragraph
                    IntercompanyBillingSettlementHeader.PayablesCompany
                        label is "Company"
                        select is PayablesCompanySelectForIntercompanySettlement
                    IntercompanyBillingSettlementHeader.PayablesCompany.Name
                        no label
                        display as text
                paragraph
                    IntercompanyBillingSettlementHeader.PayablesCashCode
                        label is "CashCode"
                        select is CashCodeForCompanyList
                    IntercompanyBillingSettlementHeader.PayablesCashCode.Description
                        no label
                        display as text
                    IntercompanyBillingSettlementHeader.PayablesCashCode.BankAccountNumber
                        label is "BankAccount"
                        display as text
                paragraph
                    IntercompanyBillingSettlementHeader.PayablesBankTransactionCode
                        label is "BankTransactionCode"
                    IntercompanyBillingSettlementHeader.PayablesBankTransactionCode.Description
                        no label
                        display as text
                paragraph
                    PayableCurrencyInfo.CurrencyTable
                        label is "CurrencyTable"
                    PayableCurrencyInfo.CurrencyTable.Description
                        no label
                        display as text
                paragraph
                    PayableCurrencyInfo.CurrencyExchangeRate
                        label is "ExchangeRate"
                visible when (PayableCurrencyNotSettlementCurrency)
                    paragraph
                        PayableCurrencyInfo.CurrencyAmount
                            label is "InCompanyCurrency"
                            display as text
                        IntercompanyBillingSettlementHeader.PayablesCompany.GeneralLedgerCompany.Currency
                            no label
                            display as text
                blank line
                visible when (DisplaySinglePayablesPayment)
                    single column
                        button of "ViewPayment"
                            link is PayablesPaymentLink
                            display as link
                visible when (DisplayMultiplePaymentMsg)
                    single column
                        text of "<MultiplePaymentMessage>"
                            color of blue
            column2
                header2 of "Receivable"
                paragraph
                    ReceivableCompany
                        label is "Company"
                        select is ReceivableCompanySelectForIntercompanySettlement
                    ReceivableCompany.Name
                        no label
                        display as text
                paragraph
                    ReceivableCashCode
                        label is "CashCode"
                        select is CashCodeForCompanyList
                    ReceivableCashCode.Description
                        no label
                        display as text
                    ReceivableCashCode.BankAccountNumber
                        label is "BankAccount"
                        display as text
                paragraph
                    ReceivableBankTransactionCode
                        label is "BankTransactionCode"
                    ReceivableBankTransactionCode.Description
                        no label
                        display as text
                paragraph
                    ReceivableCurrencyInfo.CurrencyTable
                        label is "CurrencyTable"
                    ReceivableCurrencyInfo.CurrencyTable.Description
                        no label
                        display as text
                paragraph
                    ReceivableCurrencyInfo.CurrencyExchangeRate
                        label is "ExchangeRate"
                visible when (ReceivableCurrencyNotSettlementCurrency)
                    paragraph
                        ReceivableCurrencyInfo.CurrencyAmount
                            label is "InCompanyCurrency"
                            display as text
                        ReceivableCompany.Currency
                            no label
                            display as text
                blank line
                visible when (Status.Released)
                    single column
                        button of "ViewPayment"
                            link is ReceivablePaymentLink
                            display as link
