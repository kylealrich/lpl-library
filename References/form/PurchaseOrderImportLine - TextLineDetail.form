TextLineDetail is a Form
    Layout
        display as text
            single column
                Closed
            header2 of "GeneralInformation"
            three column distributed
                column1
                    paragraph
                        Item
                    paragraph
                        Description
                    paragraph
                        VendorItem
                        VendorItem.VendorItemDescription
                            no label
                    paragraph
                        ItemType
                        ServiceCode
                column2
                    paragraph
                        Quantity
                    paragraph
                        EnteredBuyUOM
                            label is "EnteredBuyUOM"
                    paragraph
                        EnteredUnitCost
                            label is "UnitCost"
                column3
                    paragraph
                        EarlyDeliveryDate
                            label is "DeliveryDate"
                    paragraph
                        LateDeliveryDate
                            label is "LateDeliveryDate"
                    paragraph
                        ShipToLocation
                        ShipToLocation.Name
                            no label
            visible when (AssetTemplateExists)
                single column
                    button of "AssetDefaults"
                        link is AssetDefaults
            header2 of "_"
            two column distributed
                column1
                    StockWeight
                        label is "Weight"
                column2
                    StockVolume
                        label is "Volume"
            four column distributed
                column1
                    InspectionRequired
                column2
                    MSDSRequired
                column3
                    CertificationRequired
                column4
                    ExcludeFromAddOnChargeSpread
            header2 of "Codes"
            three column distributed
                column1
                    paragraph
                        CommodityCode
                    paragraph
                        Manufacturer
                            label is "ManufacturerInfo"
                            compact format
                    paragraph
                        MajorPurchasingClass
                column2
                    text of "_"
                    paragraph
                        ManufacturerNumber
                            no label
                    paragraph
                        MinorPurchasingClass
            header2 of "Tax"
            three column distributed
                column1
                    paragraph
                        Taxable
                    paragraph
                        TaxUsageCode
                column2
                    paragraph
                        TaxCode
                        TaxCode.Description
                            no label
                    paragraph
                        TaxableUnitCost
            header2 of "Pricing"
            single column
                CostOption
            header2 of "Tolerance"
            three column distributed
                column1
                    UndershipmentTolerancePercentage
                        label is "UndershipmentCancelPercentage"
                    OvershipmentTolerancePercentage
                        label is "OvershipmentPercentage"
                column2
                    UndershipmentToleranceOption
                    OvershipmentToleranceOption
                column3
                    IgnoreLeadTimeCalculation
            header2 of "Global"
            three column distributed
                column1
                    paragraph
                        ICNCode
                column2
                    paragraph
                        SupplementaryQuantity
                column3
                    paragraph
                        GlobalLineType
                            label is "LineType"
            header2 of "Miscellaneous"
            paragraph
                ItemGTIN
                    label is "G\\T\\I\\N"
                ItemGTIN.AbbreviatedDescription
                    no label
