BillingInterfaceHeaderDataContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    RunGroup
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
            column2
                visible when (not Company.ManualInvoiceNumbering)
                    paragraph
                        visible when (ParallelReferenceEnabled)
                            DerivedBillingInvoiceForParallelReference
                                display as text
                            ParallelReference
                        visible when (not ParallelReferenceEnabled)
                            visible when (not RecordExists)
                                InvcPrefix
                                    label is "InvoicePrefix"
                                InvoiceNumber
                            visible when (RecordExists)
                                DerivedBillingInvoice
                                    display as text
                visible when (Company.ManualInvoiceNumbering)
                    paragraph
                        GlobalInvoiceNumber
                            label is "Invoice"
                paragraph
                    BillingInvoiceType
                        label is "InvoiceType"
                        select is InvoiceTypes
                    BillingInvoiceType.Description
                        no label
                        display as text
            column3
                paragraph
                    BillingProcessLevel
                        label is "ProcessLevel"
                        select is ProcessLevels
                    BillingProcessLevel.Name
                        no label
                        display as text
                paragraph
                    Description
