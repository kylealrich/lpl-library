VendorSearch is a SearchForm
    Layout
        five column distributed
            VendorSearchName
                label is "SearchName"
                disable translation filtering
            Vendor
                label is "VendorID"
            TaxID
            LegalName
                disable translation filtering
            VendorStatus
                label is "Status"
        five column distributed
            Reference1
            VendorClass
            VendorAddress.DisplayAddressLine1
                label is "StreetAddress"
                disable translation filtering
            VendorAddress.Municipality
                label is "City"
            VendorAddress.StateProvince
                label is "State"
        header2 of "Additional"
            collapsible
                initially collapsed
                use show more or less affordance
            five column distributed
                Reference2
                EDINumber
                EmailAddress
                ContactName
                    disable translation filtering
                Customer
                    select is CustomerSelectList
            five column distributed
                AuthorityCode
                PayablesHoldCode
                    label is "HoldCode"
                    select is HoldOnVendorList
