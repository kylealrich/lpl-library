TransactionReconDetailForm is a CompositeForm
    is primary
    propagate as a drill
    title is "ReconciliationTransaction"
    context form is TransactionReconDetailCompositeForm
        background is theme color
    MatchedRecords is a Panel
        visible when (SummaryRecord)
        list is TransactionReconDetail descendants.TransactionReconDetailList
    RelatedMatchedRecords is a Panel
        visible when (not SummaryRecord)
        list is RelatedMatchedTransactionsRel.TransactionReconDetailList
    TransactionDetails is a Panel
        visible when (not SummaryRecord)
        form is TransactionDetailsForm
