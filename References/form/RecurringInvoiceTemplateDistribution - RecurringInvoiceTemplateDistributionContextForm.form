RecurringInvoiceTemplateDistributionContextForm is a Form
    Layout
        visible when (RecurringInvoiceTemplate.Status.Unreleased)
            two column distributed
                column1
                    paragraph
                        Company
                            label is "TransactionCompany"
                        Company.Name
                            no label
                            display as text
                    paragraph
                        DistributionAmount
                            label is "DistributionAmount"
                column2
                    paragraph
                        ReceivableDistributionCategory
                            label is "DistributionCategory"
                        ReceivableDistributionCategory.Description
                            no label
                            display as text
                    paragraph
                        GeneralLedgerAccount
                            label is "GlobalLedgerAccount"
                            compact format
                    paragraph
                        Description
        visible when (RecurringInvoiceTemplate.Status.Released)
            two column distributed
                column1
                    paragraph
                        Company.RepresentativeText
                            label is "TransactionCompany"
                            display as text
                    paragraph
                        Company.RepresentativeText
                            label is "GlobalLedgerCompany"
                            display as text
                    paragraph
                        DistributionAmount
                            label is "DistributionAmount"
                            display as text
                column2
                    paragraph
                        ReceivableDistributionCategory
                            label is "DistributionCategory"
                            display as text
                        ReceivableDistributionCategory.Description
                            no label
                            display as text
                    paragraph
                        GeneralLedgerAccount
                            label is "GlobalLedgerAccount"
                            compact format
                    paragraph
                        Description
                            display as text
