OrderAddOnChargesDetail is a Form
    title is "AddOnChargeDetails"
    Layout
        two column
            column1
                Miscellaneous
                    label is "AddOnCharge"
                    compact format
            column2
                OrderDiscount
                    label is "OrderDiscount"
        visible when (Miscellaneous.IsFlatAmountOrUnitPrice)
            two column
                column1
                    UnitPrice
                column2
                    UnitCost
        visible when (Miscellaneous.ChargeType.Percentage)
            two column
                column1
                    PricePercent
                        label is "PricePercent"
                column2
                    CostPercent
                        label is "CostPercent"
        text of "_"
        paragraph
            SalesAccount
                label is "SalesAccount"
                compact format
        paragraph
            CostOfGoodsSoldAccount
                label is "CostOfGoodsSoldAccount"
                compact format
        paragraph
            OffsetAccount
                label is "OffsetAccount"
                compact format
