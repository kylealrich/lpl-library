ResponderUserSummaryContext is a Form
    Layout
        display as text
            four column distributed
                RecallNotice.RepresentativeText
                Priority
                FormattedDueDate
                    label is "DueDate"
                paragraph
                    RecallNotice.DerivedQueryBeginDate
                        label is "TransactionDateBegin"
                    RecallNotice.DerivedQueryEndDate
                        label is "TransactionDateEnd"
        three column distributed
            visible when (UnacceptedNonManualTaskWithQuestions)
                text of "*TaskMustBeAcceptedBeforeQuestionsCanBeAnsweredOrQuantitiesEntered"
                    italics
            visible when (Status.Completed)
                text of "TaskHasBeenCompleted"
                    italics
            visible when (TaskCanBeAccepted)
                text of "MustAcceptTaskBeforeResponsesCanBeEntered"
                    bold
        single column
            RecallNotice.Description
                display as text
                use text area of 3 lines
        paragraph
            visible when (HasLinkToDisplay)
                button of "<first DisplayLinkOnTaskRel.Link>"
                    link is external "<first DisplayLinkOnTaskRel.Link>"
                    display as link
            visible when (HasAttachmentToDisplay)
                visible when (false)
                    first DisplayAttachmentOnTaskRel.Attachment.MimeType
                button of "<first DisplayAttachmentOnTaskRel.Attachment.Title>"
                    view first DisplayAttachmentOnTaskRel.Attachment.File
                    display as link
        visible when (RecallTaskInstruction entered)
            two column distributed
                display as text
                    RecallTaskInstruction
                    TaskInstructionDescription
                        use text area of 3 lines
