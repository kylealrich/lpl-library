CreateActionExtension is an ActionForm
    action is CreateActionExtension
        on completion navigate to ConfigConsoleNav
    Layout
        section of General
            single column
                BusinessClassParam
                BaseActionParam
                    select is ActionExtensionSelect
                visible when (BaseActionParam.StateName entered)
                    BaseActionParam.StateName
                ActionNameParam
            header3 of "AdjustDefaultLabel"
            single column
                text of "Action_LabelWillDefaultFromThe_ActionNameAbove.YouCanOverride."
                    bold
                    align as label
            paragraph
                HasExplicitLabelParam
                    label is "OverrideDefaultActionLabel"
                visible when (HasExplicitLabelParam)
                    ExplicitLabelParam
                        no label
        section of Required
            paragraph
                valid when (BusinessClassParam.ImplementsEffectiveDated)
                    EffectiveDateRequiredParam
                valid when (BusinessClassParam.ImplementsAuditing)
                    ReasonCodeRequiredParam
                    ActionCommentRequiredParam
            single column
                SubjectParam
        section of Workflow
            visible when (not BaseActionParam.IsRequestAction)
                single column
                    text of "ValidOnlyForRequestActions"
                        bold
            visible when (BaseActionParam.IsRequestAction)
                single column
                    ProcessFlowParam
                    WebAppParam
