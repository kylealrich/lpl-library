ContractQuestionAction is an ActionForm
    action is Create
    action is CreateForProposal
    title is "CreateQuestion"
    Layout
        display as text
            paragraph
                Contract.RepresentativeText
        single column
            QuestionText
                use text area of 8 lines
            ResponseType
            visible when (EligibleForSourcing)
                SSQuestion
                    label is "SendQuestionToSourcing"
            AllowResponseAttachment
            visible when (ResponseType.Text)
                ResponseRules
            visible when (ResponseType.Number)
                ResponseRules
            visible when (ResponseType.Date)
                ResponseRules
            visible when (ResponseType.List)
                ResponseRules
            visible when (ResponseType.YesNoText)
                YesNoTextResponseRules
            visible when (ResponseType.YesNo)
                YesNoResponseRules
        paragraph
            Attachment.File
                label is "Attachment"
        visible when (ResponseType.List)
            single column
                text of "EnterOptionsForListAnswer"
                    italics
                TransientListAnswer1
                    label is "FirstListAnswer"
                TransientListAnswer2
                    label is "SecondListAnswer"
                TransientListAnswer3
                    label is "ThirdListAnswer"
                TransientListAnswer4
                    label is "FourthListAnswer"
                TransientListAnswer5
                    label is "FifthListAnswer"
