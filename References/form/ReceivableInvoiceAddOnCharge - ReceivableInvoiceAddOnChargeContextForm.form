ReceivableInvoiceAddOnChargeContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                column2
                    ReceivableInvoice.Customer.RepresentativeText
                        label is "Customer"
                column3
                    ReceivableInvoiceType
                        label is "Type"
                column4
                    ReceivableInvoice
                        label is "InvoiceNumber"
            four column distributed
                column1
                    visible when (ReceivableInvoiceLine not entered)
                        text of "*Header_\\Add_\\On_\\Charge*"
                            bold
                    visible when (ReceivableInvoiceLine entered)
                        text of "*Line<ReceivableInvoiceLine>_\\Add_\\On_\\Charge*"
                            bold
                visible when (ReceivableInvoiceAddOnCharge entered)
                    column2
                        GrossAmount
                            label is "GrossAmount"
                    column3
                        TaxAmount
                            label is "TaxAmount"
                    column4
                        TotalAmount
                            label is "TotalAmount"
