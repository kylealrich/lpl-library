StudentActivityReceiptBatchContextForm is a Form
    title is "<mode>ReceiptBatch"
    Layout
        five column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    visible when (not ReceiptBatchExists)
                        StudentActivityReceiptBatch
                            label is "BatchNumber"
                    visible when (ReceiptBatchExists)
                        StudentActivityReceiptBatch
                            label is "BatchNumber"
                            display as text
                paragraph
                    StudentActivitySchoolClass
                        label is "Class"
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    BatchAmount
                paragraph
                    SchoolActivityAccount
                        label is "Activity"
                        compact format
                        select is SchoolActivityAccountSelectList
            column3
                paragraph
                    visible when (not ReceiptBatchExists)
                        StudentActivitySchool
                            label is "School"
                            select is SchoolSelectList
                    visible when (ReceiptBatchExists)
                        StudentActivitySchool
                            label is "School"
                            display as text
                paragraph
                    BatchDate
                paragraph
                    TotalReceiptAmount
                        display as text
            column4
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    Status
                        display as text
            column5
                paragraph
                    visible when (ReceiptBatchExists)
                        TransactionCurrencyCode
                            label is "Currency"
                            display as text
                    visible when (not ReceiptBatchExists)
                        blank line
                visible when (LinkedToDeposit)
                    paragraph
                        StudentActivityBankAccount
                            label is "BankAccount"
                            display as text
                        StudentActivityBankTransaction
                            label is "DepositNumber"
                            display as text
                        StudentActivityBankTransaction.TransactionDate
                            label is "DepositDate"
                            display as text
        single column
            Description
                use text area of 3 lines
