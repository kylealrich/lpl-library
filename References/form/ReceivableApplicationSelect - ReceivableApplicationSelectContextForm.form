ReceivableApplicationSelectContextForm is a Form
    Layout
        four column distributed
            column1
                display as text
                    ReceivableApplicationSelect.TransactionCompany.RepresentativeText
                    Company.RepresentativeText
                        label is "PaymentCompany"
                    paragraph
                        TransactionApplicationAmount
                            label is "InvoiceAppliedAmount"
                        ReceivableInvoiceDetailRel.OriginalCurrency
                            no label
                    visible when (AdjustmentsExist)
                        paragraph
                            TotalAdjustments
                                label is "InvoiceAdjustAmount"
                            ReceivableInvoiceDetailRel.OriginalCurrency
                                no label
            column2
                display as text
                    paragraph
                        ReceivableApplicationSelect.ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                            label is "Type"
                        ReceivableApplicationSelect.ReceivableInvoiceDetail.Invoice
                            label is "Invoice"
                        ReceivableApplicationSelect.ReceivableInvoiceDetail.PaymentSeq
                            label is "Sequence"
                    ReceivablePaymentHeader
                        label is "PaymentBatch"
                    paragraph
                        PaymentApplicationAmount
                            label is "PaymentAppliedAmount"
                        ReceivablePayment.OriginalCurrency
                            no label
                    visible when (AdjustmentsExist)
                        paragraph
                            TotalCreditAdjustments
                                label is "PaymentAdjustAmount"
                            ReceivablePayment.OriginalCurrency
                                no label
            column3
                display as text
                    paragraph
                        ReceivableApplicationSelect.ReceivableInvoiceDetail.InvoiceAmount.CurrencyAmount
                        ReceivableInvoiceDetailRel.OriginalCurrency
                            no label
                    ReceivablePayment.PaymentNumber
                    paragraph
                        BaseApplicationAmount
                            label is "BaseAppliedAmount"
                        Company.Currency
                            no label
                    visible when (AdjustmentsExist)
                        paragraph
                            TotalAdjustmentsBaseCurrency
                                label is "BaseAdjustAmount"
                            Company.Currency
                                no label
                    visible when (InvoiceOriginIsFundAccountingSupported)
                        visible when (IsNationalAccountApplication)
                            visible when (AllowSelectDistributionSet)
                                paragraph
                                    TransientDistributionSetState
                                        label is "DistributionStatus"
                                        display as tag
                                            color of red when (TransientDistributionSetState.OutOfBalance)
                                            color of green when (TransientDistributionSetState.ReadyForProcessing)
                                    DerivedDistributionSetSum
                                        label is "SelectedSum"
                                        display as text
                                    DerivedDistributionSetDifference
                                        label is "Difference"
                                        display as text
            column4
                display as text
                    visible when (IsNationalAccountApplication)
                        ReceivableApplicationSelect.ReceivableInvoiceDetail.Customer.RepresentativeText
                            label is "InvoiceCustomer"
                        ReceivablePayment.Customer.RepresentativeText
                            label is "PaymentCustomer"
                visible when (not IsOverApplied)
                    EnteredAmount
                        label is "AppliedAmount"
                visible when (IsOverApplied)
                    EnteredAmount
                        label is "AppliedAmount"
                        display as text
                GeneralLedgerDate
                    label is "GlobalLedgerDate"
                visible when (InvoiceOriginIsFundAccountingSupported)
                    visible when (not IsNationalAccountApplication)
                        visible when (AllowSelectDistributionSet)
                            paragraph
                                TransientDistributionSetState
                                    label is "DistributionStatus"
                                    display as tag
                                        color of red when (TransientDistributionSetState.OutOfBalance)
                                        color of green when (TransientDistributionSetState.ReadyForProcessing)
                                DerivedDistributionSetSum
                                    label is "SelectedSum"
                                    display as text
                                DerivedDistributionSetDifference
                                    label is "Difference"
                                    display as text
                visible when (false)
                    TransientInvoiceDetailTypeForApplication
                    TransientInvoiceDetailSequenceForApplication
                    TransientReceivableCompanyForContext
                    TransientReceivableBatchForContext
                    TransientReceivableInvoiceForContext
                    TransientFundDistributionSetState
