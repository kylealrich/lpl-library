StudentActivityReceiptDetailForm is a Form
    is primary
    title is "<mode>ReceiptDetail"
    Actions
        action is Entered.Create
            action icon is create
            hide when invalid
        action is save
        action is save and new
        action is Entered.DeleteReceiptDetail
            action icon is delete
            hide when invalid
        action is next record
        action is previous record
        action is refresh
    Layout
        four column table
            column1
                paragraph
                    StudentActivitySchool
                        label is "School"
                        display as text
                paragraph
                    StudentActivityReceipt
                        label is "ReceiptNumber"
                        display as text
                paragraph
                    SchoolActivityAccount
                        label is "Activity"
                        compact format
                        select is SchoolActivityNonAssetAccountSelectList
                paragraph
                    DetailAmount
                        label is "Amount"
                paragraph
                    StudentRecord
                        label is "StudentId"
                        select is StudentBySchoolList
                paragraph
                    CorrectedPosting
                        display only
            column2
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    StudentActivityReceipt.ReceiptDate
                        display as text
                paragraph
                    SchoolActivityAccount.Description
                        no label
                        display as text
                blank line
                paragraph
                    DerivedName
                        no label
                        display as text
            column3
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                paragraph
                    Status
                        display as text
            column4
                blank line
                paragraph
                    StudentActivityReceipt.Description
                        label is "ReceiptDescription"
                        display as text
        paragraph
            Description
                label is "DetailDescription"
                use text area of 3 lines
