FinanceChargeInitiation is an ActionForm
    action is FinanceChargeInitiation
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            AsOfDate
                label is "StartDate"
        single column
            UpdateOption
        paragraph
            DefaultCode
                select is DefaultCodes
            DefaultCode.Description
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                FinanceChargeInitiationReport_RDG
            column2 of 25%
                FinanceChargeInitiationReport_XPT
