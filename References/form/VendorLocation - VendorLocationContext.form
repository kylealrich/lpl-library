VendorLocationContext is a Form
    Layout
        four column distributed
            column1
                Logo.File
                    display as portrait image
                        missing image is random background
                            foreground text is "<Vendor.XiVendorNameAbbreviation>"
            column2
                Vendor.DerivedVendorNameID
                    display as text
                VendorGroup.VendorGroupAndDescription
                    label is "VendorGroup"
                    display as text
            column3
                visible when (RecordExists)
                    DerivedLocationNameID
                        label is "Location"
                        display as text
            column4
                paragraph
                    Status
                        no label
                        display as tag
                            color of red when (not Status.Active)
                            color of green when (Status.Active)
                paragraph
                    visible when (OnHold)
                        OnHoldDisplay
                            no label
                            display as tag
                                color of red
                visible when (LocationOnHold)
                    paragraph
                        LocationOnHoldDisplay
                            no label
                            display as tag
                                color of red
                        VendorClaimHoldCode
                            no label
