MobileRegistrationSummary is a Form
    title is "Status"
    Layout
        paragraph
            Supplier
                label is "SupplierNumberIs"
                display as text
        paragraph
            text of "RegistrationStatus:<PrimaryContact.RegistrationStatus>"
                center
                bold
        paragraph
            text of "<PrimaryContact.SummaryText>"
                bold
                italics
                color of blue
        single column
            text of "ClickMyAccountToEnterAdditionalInformation"
            button of "MyAccount"
                link is PortalSupplier
        paragraph
            text of "<PrimaryContact.NotCompleteQuestions>"
        paragraph
            text of "<PrimaryContact.NotCompleteQuestionAttachments>"
        visible when (SomeRequiredQuestionsOrAttachmentsNotAnswered)
            paragraph
                button of "AnswerUnansweredRequiredQuestions"
                    link is SupplierUnansweredQuestions
        paragraph
            text of "<PrimaryContact.NotCompleteCommodities>"
        paragraph
            text of "<PrimaryContact.CompleteWarning>"
                bold
        visible when (HasEventToCreate)
            single column
                text of "ClickLinkToContinueRespondingToEvent<EventToCreate>"
                    bold
                button of "RespondToEvent"
                    form invoke is CreateSourcingEventResponse
