DocumentTemplatesForm is a Form
    title is "DocumentTemplates"
    Layout
        header2 of "IDMDocumentTemplates"
        single column
            paragraph
                ReceivableInvoiceTemplate
                    select is ReceivableInvoiceIDMTemplate
                button of "<ReceivableInvoiceTemplate.Name>"
                    link is external "<ReceivableInvoiceTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
            paragraph
                ReceivableInvoiceExpandedTemplate
                    select is ReceivableInvoiceExpandedIDMTemplate
                button of "<ReceivableInvoiceExpandedTemplate.Name>"
                    link is external "<ReceivableInvoiceExpandedTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
            paragraph
                ReceivablesStatementTemplate
                    select is ReceivablesStatementIDMTemplate
                button of "<ReceivablesStatementTemplate.Name>"
                    link is external "<ReceivablesStatementTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
        two column
            column1
                header2 of "IDMEmailTemplate"
                paragraph
                    ReceivableInvoiceIDMEmailTemplate
                        select is ReceivableInvoiceIDMEmailTemplate
                    button of "<ReceivableInvoiceIDMEmailTemplate.Name>"
                        link is external "<ReceivableInvoiceIDMEmailTemplate.RetrieveUrl>"
                            lazy url retrieval
                        display as link
                paragraph
                    ReceivableInvoiceExpandedIDMEmailTemplate
                        select is ReceivableInvoiceExpandedIDMEmailTemplate
                    button of "<ReceivableInvoiceExpandedIDMEmailTemplate.Name>"
                        link is external "<ReceivableInvoiceExpandedIDMEmailTemplate.RetrieveUrl>"
                            lazy url retrieval
                        display as link
                paragraph
                    ReceivableStatementIDMEmailTemplate
                        select is ReceivableStatementIDMEmailTemplate
                    button of "<ReceivableStatementIDMEmailTemplate.Name>"
                        link is external "<ReceivableStatementIDMEmailTemplate.RetrieveUrl>"
                            lazy url retrieval
                        display as link
            column2
                header2 of "IDMEmailSubject"
                paragraph
                    ReceivableInvoiceIDMEmailSubject
                    visible when (ReceivableInvoiceIDMEmailSubject entered)
                        text of "Sample:<DerivedReceivableInvoiceIDMEmailSubject>"
                paragraph
                    ReceivableStatementIDMEmailSubject
                    visible when (ReceivableStatementIDMEmailSubject entered)
                        text of "Sample:<DerivedReceivableStatementIDMEmailSubject>"
