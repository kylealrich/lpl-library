ConfigurableFeaturesHeader is a Form
    title is "RoleConfigurableFeatures"
    Layout
        header2 of "_"
        visible when (not IsConfigurableFeaturesEnabled)
            paragraph
                text of "Configurable_FeaturesNotEnabled!"
                    header3
                    bold
        two column
            column1
                Role
                    no label
                    header1
                    bold
                    display as text
                    raise blue alert when (DataAreaHasOverride)
                        mouse over text is "ThisSettingsAreForThis_Data_Area_Only!"
            column2
                paragraph
                    visible when (DataAreaHasOverride)
                        button of "ViewBaseFeatures"
                            link is BaseConfigurableFeatures
                            right align
                            display as link
                    button of "ViewConfigurableFeaturesForAllRoles"
                        list is AllRoles.ConfigurableFeaturesRoleList
                        right align
                        display as link
                    visible when (HasOtherOverrides)
                        button of "Other_Overrides"
                            list is OtherDataAreaRel.OtherConfigurableFeaturesDetailList
                            right align
                            display as link
                    button of "EditFeatures"
                        action is UpdateConfigurableFeatures
                        right align
                        is primary
                    visible when (DataAreaHasOverride)
                        button of "Remove_Data_AreaOverride"
                            action is RemoveFeatureOverride
                            right align
                    visible when (not DataAreaHasOverride)
                        button of "Override_Data_Area"
                            action is AddFeatureOverride
                            right align
