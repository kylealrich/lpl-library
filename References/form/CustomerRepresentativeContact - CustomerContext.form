CustomerContext is a Form
    disable field options
    Layout
        visible when (PortalContact)
            display as text
                single column
                    MainContact.FirstAndLastName
                        no label
                        header3
                        color of blue
                    visible when (Customer.ContactTitle entered)
                        Customer.ContactTitle
                            label is "Title"
                    EmailAddress
                paragraph
                    visible when (TelephoneNumber entered)
                        DerivedTelephoneNumber
                            label is "Phone"
                single column
                    FullAddressDisplay
                visible when (Customer entered)
                    text of "_"
                    visible when (ShowUpdateContactButton)
                        button of "UpdateContact"
                            action is UpdateMyContactInformation
                            is primary
                    text of "_"
                    header2 of "_"
                    single column
                        visible when (Customer.Logo entered)
                            Customer.Logo.File
                                display as portrait image up to 3 lines
                            Customer.Name
                                no label
                                header3
                                color of blue
                    single column
                        CustomerFullAddressDisplay
                    button of "<Customer.URLAddress>"
                        link is "<Customer.URLAddress>"
                        display as link
                    visible when (ShowUpdateAccountButton)
                        text of "_"
                        button of "UpdateAccount"
                            action is CustomerUpdateRequest
                            is primary
