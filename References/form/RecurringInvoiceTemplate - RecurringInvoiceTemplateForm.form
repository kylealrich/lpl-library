RecurringInvoiceTemplateForm is a CompositeForm
    is primary
    title is "RecurringInvoice<RecurringInvoiceTemplate>"
    context form is RecurringInvoiceFormContext
        background is theme color
    Actions
        action is CreateCustomerRecurringInvoice
        action is previous record
            label is "_"
            mouse over text is "Previous_Record"
            hide when invalid
        action is next record
            label is "_"
            mouse over text is "Next_Record"
            hide when invalid
        action is Create
            action icon is create
            label is "_"
            hide when invalid
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is save and new
            label is "_"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
            mouse over text is "Refresh"
    Main is a Panel
        form is Main
    LineItems is a Panel
        visible when (InvoiceEntryTemplate.Standard)
        list is RecurringInvoiceTemplateLineItem set.ListRecurringInvoiceTemplateLineItem
    Lines is a Panel
        title is "Lines<DerivedLinesIndicator>"
        visible when (InvoiceEntryTemplate.Expanded)
        list is RecurringInvoiceTemplateLine set.RecurringInvoiceTemplateLines
    AddOnCharge is a Panel
        title is "AddOnCharges<DerivedHeaderAddOnChargesIndicator>"
        visible when (InvoiceEntryTemplate.Expanded)
        list is RecurringInvoiceTemplateAddOnChargesRel.RecurringInvoiceAddOnCharges
    ViewDistributions is a Panel
        title is "Distributions"
        visible when (InvoiceEntryTemplate.Expanded)
        list is RecurringInvoiceTemplateDistribution set.ExpandedRecurringInvoiceTemplateDistributionList
    Distributions is a Panel
        visible when (InvoiceEntryTemplate.Standard)
        list is RecurringInvoiceTemplateDistribution set.RecurringInvoiceTemplateDistributionList
    InvoiceComments is a Panel
        title is "Comments"
        list is RecurringInvoiceTemplateComment set.primary
    Attachments is a Panel
        list is RecurringInvoiceTemplateAttachment set.primary
