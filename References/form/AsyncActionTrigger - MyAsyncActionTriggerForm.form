MyAsyncActionTriggerForm is a Form
    title is "ActionInstance"
    restrict action DeleteFinishedTriggers
    restrict action DeleteFinishedTriggersForQueue
    restrict action DeleteFinishedTriggersForRequest
    Layout
        two column
            AsyncActionRequest.Name
                label is "ScheduledActionName"
                display only
            AsyncActionTrigger
                label is "Trigger"
                display only
        three column
            AsyncActionRequest.Actor
                label is "Actor"
                display only
            AsyncActionRequest.AuthenticatedActor
                display only
            AsyncActionRequest.IsProxy
                display only
        two column
            AsyncActionRequest.ImplementingClass
            AsyncActionRequest.AsyncAction
        header2 of "Auditing"
        paragraph
            StatusChanged
            create stamp
                label is "Created"
                display only
            Started
                display only
            Finished
                display only
        header2 of "Properties"
        single column
            AsyncQueueDefinition
                label is "Queue"
                display only
        two column
            Status
                label is "Status"
                display only
            FailureCode
                display only
        single column
            Priority
                display only
            visible when (AdditionalInformationEntered)
                AdditionalInfo
                    display only
            visible when (IsErrorState)
                ErrorMessage
                    label is untranslatable:"<ErrorMessage label>"
                        bold
                    display only
                    use text area of 2 lines
                button of "ViewErrorSummary"
                    link is FailureExceptionSummaryFormNavigation
            visible when (not IsErrorState)
                Result
                    label is "Result"
                    display only
                    use text area
        two column
            NotificationInformation.DerEmailAddressMulti
                display only
            NotificationInformation.NotificationType
                display only
        visible when (HasRunOnErrorAction)
            header2 of "ErrorProcessing"
            single column
                RunOnErrorFailureCode
                    label is "FailureCode"
                    display only
                visible when (IsRunOnErrorFailure)
                    visible when (IsRunOnErrorErrorMessageEntered)
                        RunOnErrorErrorMessage
                            label is untranslatable:"<RunOnErrorErrorMessage label>"
                                bold
                            display only
                            use text area of 2 lines
                    visible when (not IsRunOnErrorErrorMessageEntered)
                        RunOnErrorResult
                            label is "Result"
                            display only
                    button of "ViewErrorSummary"
                        link is FailureRunOnErrorExceptionSummaryFormNavigation
                visible when (not IsRunOnErrorFailure)
                    visible when (IsRunOnErrorErrorMessageEntered)
                        RunOnErrorErrorMessage
                            label is untranslatable:"<RunOnErrorErrorMessage label>"
                                bold
                            display only
                            use text area of 2 lines
                    visible when (not IsRunOnErrorErrorMessageEntered)
                        RunOnErrorResult
                            label is "Result"
                            display only
