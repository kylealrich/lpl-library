PaymentIntoCredit is an ActionForm
    action is Open.PaymentIntoCredit
    Layout
        four column distributed
            column1
                paragraph
                    Company
                        display as text
                    Customer
                        display as text
                PrmCreditDebitMemoReason
                    label is "MemoReasonCode"
                PrmReceivableReason
                    label is "ReasonCode"
                    select is ReceivableReasonCodeOSList
            column2
                PaymentNumber
                    display as text
                PrmTermsCode
                    label is "MemoPaymentTerms"
                PrmTransactionAmount
                    label is "Amount"
            column3
                PrmGeneralLedgerDate
                    label is "GlobalLedgerDate"
                PrmReceivableInvoice
                    label is "CreditMemo"
                paragraph
                    PrmReceivableProcessLevel
                        label is "ProcessLevel"
                    visible when (Company.CashOperatorRequired)
                        PrmOperator
                            label is "Operator"
            column4
                paragraph
                    TransactionAmount
                        display as text
                    PrmTransactionAmount
                        label is "OpenPaymentAmount"
                        display as text
                PrmDescription
                    label is "Description"
                PrmReceivableGeneralLedgerCode
                    label is "AccountsReceivableCode"
        paragraph
            PrmKeyedInAccount
                label is "AdjustmentAccount"
                compact format
