                    left of field
            visible when (ProcessingOption.DatabaseFile)
                IncludePurchaseOrdersInError
                    label is "IncludePurchaseOrdersInError"
                        left of field
            text of "IfRunForErrorRunGroupPurchaseOrdersInErrorWillAutomaticallyBeIncluded"
                italics
            PrmMoveErrorsToNewRunGroup
                label is "MoveErrorsToNewRunGroup"
                    left of field
            visible when (PrmMoveErrorsToNewRunGroup)
                PrmErrorRunGroupPrefix
                    label is "ErrorRunGroupPrefix"
            PrmSpecificAction
                label is "ProcessOnlyRecordsForThisAction"
            EnableGTINProcessing
                label is "EnableGTINProcessing"
                    left of field
