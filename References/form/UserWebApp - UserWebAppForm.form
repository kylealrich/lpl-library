UserWebAppForm is a Form
    is primary
    title is "UserWebApplication"
    Layout
        paragraph
            UserWebAppName
                label is "WebApplication"
            Description
            UserWebApp
                label is "UserWebAppId"
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        single column
            LPL
                use text area of 35 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
