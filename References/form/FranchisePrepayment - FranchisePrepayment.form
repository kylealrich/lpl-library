FranchisePrepayment is a Form
    is primary
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        Company
                    visible when (RecordExists)
                        Company.BillingCompany.RepresentativeText
                            display as text
                paragraph
                    visible when (not RecordExists)
                        Customer
                            select is CustomerContextCompanySelectList
                    visible when (RecordExists)
                        FranchiseContract.DerivedCustomer
                            display as text
                paragraph
                    visible when (not RecordExists)
                        CustomerShipTo
                            label is "ShipTo"
                    visible when (RecordExists)
                        FranchiseContract.DerivedShipTo
                            display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        FranchiseContract
                            label is "Contract"
                paragraph
                    visible when (RecordExists)
                        FranchiseContract
                            label is "Contract"
                            display as text
                        FranchiseContractCharge.FranchiseStandardCharge.Currency
                            label is "Currency"
                            display as text
                paragraph
                    visible when (not RecordExists)
                        FranchiseContractCharge
                            label is "ContractCharge"
                            select is FranchiseContractChargeTypeList
                        FranchiseContractCharge.Description
                            no label
                            display as text
                    visible when (RecordExists)
                        FranchiseContractCharge
                            label is "ContractCharge"
                            display as text
                            select is FranchiseContractChargeTypeList
                        FranchiseContractCharge.Description
                            no label
                            display as text
                paragraph
                    Charge
                        display as text
            column3
                paragraph
                    Status
                        display as tag
                            color of gray when (Status.Unreleased)
                            color of green when (Status.Released)
                            color of orange when (Status.GlUpdated)
                paragraph
                    visible when (not RecordExists)
                        FranchisePrepayment
                            label is "PrepaymentDate"
                    visible when (RecordExists)
                        FranchisePrepayment
                            label is "PrepaymentDate"
                            display as text
                paragraph
                    visible when (Status.Unreleased)
                        TransactionAmount
                            label is "Amount"
                    visible when (not Status.Unreleased)
                        TransactionAmount
                            label is "Amount"
                            display as text
