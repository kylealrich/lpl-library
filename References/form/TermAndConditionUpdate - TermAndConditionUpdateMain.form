TermAndConditionUpdateMain is a Form
    title is "TermAndConditionApprovalRequest"
    Layout
        two column
            RequestType
                display as text
            SpecificRequestType
                display as text
        two column
            Status
                display as text
            ActionTaken
                display as text
        visible when (ApprovalComment entered)
            single column
                ApprovalComment
                    display as text
        visible when (DisplayRejectionComment)
            single column
                RejectionComment
                    label is "RejectionComment"
                    display as text
        visible when (RequestType.Create)
            single column
                RevisedTitle
                    label is "Title"
                    display as text
                RevisedHeaderText
                    label is "HeaderText"
                    display as text
                RevisedDescription
                    label is "Description"
                    display as text
        visible when (RequestType.Update)
            single column
                DerivedComparedTitle
                    label is "Title"
                    display as text
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display as text
                DerivedComparedDescription
                    label is "Description"
                    display as text
        visible when (SpecificRequestType.AddAttachment)
            single column
                NewAttachmentDisplayOrder
                    display as text
                NewAttachment.File
                    label is "NewAttachment"
                    display as text
                NewAttachmentReference
                    label is "NewAttachmentReference"
                    display as text
        visible when (AttachmentToBeDeleted)
            header2 of "AttachmentToBeDeleted"
            single column
                TermAndConditionAttachmentRel.DisplayOrder
                    display as text
                TermAndConditionAttachmentRel.Attachment.File
                    label is "Attachment"
                    display as text
                TermAndConditionAttachmentRel.AttachmentReference
                    display as text
            header2 of "_"
        visible when (AttachmentHasBeenDeleted)
            header2 of "AttachmentToBeDeleted"
            single column
                DeletedAttachment.File
                    label is "Attachment"
                    display as text
                DeletedAttachmentRef
                    label is "AttachmentReference"
                    display as text
            header2 of "_"
