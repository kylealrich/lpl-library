Main is a Form
    Layout
        visible when (not RecordExists)
            single column
                VendorLocation
                    label is "Location"
        two column distributed
            column1
                VendorName
                    label is "Name"
                LocationType
                paragraph
                    RemitToCode
                    RemitToCode.VendorName
                        no label
                        display as text
                VendorAccount
                paragraph
                    VATRegistrationCountry
                        label is "V\\A\\TRegistrationCountry/\\Jurisdiction"
                        display as required when (VATRegistrationCountryRequired)
                    VATRegistrationNumber
                        when value changed
                            refresh VATRegistrationCountryRequired
                paragraph
                    InvoiceCurrency
                        label is "InvoiceCurrency"
                    RevalueCurrency
                        label is "Revalue"
            column2
                Status
                paragraph
                    effective date
                    visible when (DisplayCreatePurchaseFromLocationLink)
                        button of "AddPurchasingDetailsToLocation"
                            form invoke is CreatePurchaseFromLocation
                            display as link
                    visible when (PurchaseFromLocationExists)
                        button of "View/\\UpdatePurchasingDetails"
                            link is PurchaseFromLocationNav
                            display as link
                NormalRemitToLocation
                NormalPurchaseFromLocation
                GlobalLocationNumber
                    display as text
                visible when (VendorGroup.BusinessGroup.UseHSNSACCode)
                    TaxRegistrationType
        header2 of "CurrentAddress"
        visible when (not RecordExists)
            UseVendorAddress
                label is "UseVendorAddress"
            visible when (UseVendorAddress)
                CurrentVendorAddress
            visible when (not UseVendorAddress)
                VendorAddress
        visible when (RecordExists)
            two column
                column1
                    display as text
                        CurrentAddressRel.PostalAddress.DisplayAddressMultiline
                            label is "PostalAddress"
                column2
                    button of "ChangeAddress"
                        form invoke is ChangeCurrentAddress
                        display as link
        header2 of "PrimaryContact"
        visible when (not RecordExists)
            two column
                column1
                    ContactName
                    PhoneNumber
                    MobileNumber
                    FaxNumber
                    EmailAddress
                column2
                    TwitterID
                    SocialNetworkID2
                    SocialNetworkID3
                    SocialNetworkID4
                    SocialNetworkID5
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        PrimeVendorLocationContactRel.ContactName
                        paragraph
                            PrimeVendorLocationContactRel.FormattedPhoneNumber
                            button of icon.phone
                                visible when (PrimeVendorLocationContactRel.PhoneNumberEntered)
                                link is "tel:<PrimeVendorLocationContactRel.PhoneNumber.SubscriberNumber>"
                        PrimeVendorLocationContactRel.SocialNetworkID2
                        PrimeVendorLocationContactRel.SocialNetworkID5
                    column2
                        paragraph
                            PrimeVendorLocationContactRel.EmailAddress
                            button of icon.mail
                                visible when (PrimeVendorLocationContactRel.EmailAddressEntered)
                                link is "mailto:<PrimeVendorLocationContactRel.EmailAddress>"
                        paragraph
                            PrimeVendorLocationContactRel.FormattedMobilePhoneNumber
                            button of icon.mobile
                                visible when (PrimeVendorLocationContactRel.MobilePhoneNumberEntered)
                                link is "tel:<PrimeVendorLocationContactRel.MobileNumber.MobilePhoneNumber.SubscriberNumber>"
                        PrimeVendorLocationContactRel.SocialNetworkID3
                    column3
                        PrimeVendorLocationContactRel.TwitterID
                        PrimeVendorLocationContactRel.FormattedFaxNumber
                        PrimeVendorLocationContactRel.SocialNetworkID4
