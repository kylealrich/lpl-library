MobileUpdateSupplierInformation is a Form
    title is "EditSupplierDetails"
    restrict action UpdateBankCountry
    restrict action CreateVendor
    restrict action InactivateSupplier
    restrict action Delete
    Actions
        action is save and close
            action icon is save
            label is "_"
            hide when invalid
    Layout
        single column
            Picture.File
                display as portrait image up to 5 lines
                    missing image is random background
            SupplierName
            DoingBusinessAs
                show up to 30 characters
            BusinessType
            TaxIdGroup.TaxId
            TaxIdGroup.TaxIdType
            TaxCertification.File
                label is "<TaxCertificationLabel>"
            VATRegistrationNumber
            VATRegistrationCountry
            WebAddress
                label is "Website"
            visible when (SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                GlobalLocationNumber
        header3 of "MailingAddress"
        single column
            MailingAddress
                form is PostalAddressShortRequired
            visible when (SupplierGroup.DisplayTypeForRegistration)
                MailingAddress.Type
        header3 of "RemitTo_NameAnd_Address"
        single column
            SameAsAddressAbove
                label is "CheckIfRemitToAddressIs_theSame_asMailingAddress"
            BillingFirstName
                label is "RemitToFirstName"
            BillingLastName
                label is "RemitToLastName"
            visible when (not SameAsAddressAbove)
                BillingAddress
                    form is PostalAddressShortRequired
                visible when (SupplierGroup.DisplayTypeForRegistration)
                    BillingAddress.Type
