Header is a Form
    title is "TransferPricingRun"
    Layout
        four column distributed
            column1
                TransferPricingRun
                    label is "RechargeCalculation"
                    display as text
                TransferPricing
                    label is "RechargeName"
                    display as text
                AllocationRun.CurrencyTable
                    label is "RechargeCurrencyTable"
                    display as text
            column2
                AllocationControl.Calendar
                    display as text
                AllocationRun.AllocationPeriod
                    label is "RechargePeriod"
                    display as text
                paragraph
                    AllocationControl.PeriodType
                        display as text
                    first AllocationLineRel.AllocateYearToDate
                        label is "YearToDate"
            column3
                TransactionDate
                    display as text
                PostingDate
                    display as text
                AllocateAmountType
                    display as text
            column4
                Status
                    display as tag
                        color of gray when (Status.Started)
                        color of blue when (Status.Completed)
                        color of red when (Status.Failed)
                        color of green when (Status.Processed)
                    raise yellow alert when (WarningExists)
                        mouse over text is "<CountTransactionWarningMessage>"
                visible when (Status.Failed)
                    DerivedErrorMessage
                        display as tag
                            color of red
                create stamp
                    label is "RunDate_/Time"
                    display as text
