TermAndConditionAttachment is a Form
    is primary
    title is "Attachment"
    Actions
        action is save
        action is save and new
            hide when invalid
        action is save and close
            hide when invalid
    Layout
        single column
            TermAndConditionAttachment
                label is "AttachmentNumber"
                display as text
        visible when (TermAndCondition.AllowDescriptionUpdate)
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                Attachment.File
                    label is "Attachment"
                visible when (HasAttachment)
                    button of "View"
                        view Attachment.File
                        display as link
        visible when (not TermAndCondition.AllowDescriptionUpdate)
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                        display as text
                Attachment.File
                    label is "Attachment"
                    display only
                visible when (HasAttachment)
                    button of "View"
                        view Attachment.File
                        display as link
        single column
            AttachmentReference
            DisplayOrder
                display as text
