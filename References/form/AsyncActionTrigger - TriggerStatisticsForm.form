TriggerStatisticsForm is a Form
    Layout
        display as text
            header2 of "TransactionStatistics"
            three column table
                column headers
                    "Set"
                    "Commits"
                    "Checkpoint"
                column1
                    visible when (SetActionStats.EstimatedSetSizeComputed)
                        SetActionStats.EstimatedSetComplete
                            label is untranslatable:"<SetActionStats.PercentCompleteMessage>"
                            display as progress bar
                                green alert range is from 1 to 100
                        SetActionStats.DerEstimatedSetSize
                            label is untranslatable:"<SetActionStats.SetSizeMessage>"
                            raise blue alert when (SetActionStats.EstimatedSizeDiscrepancy)
                                mouse over text is untranslatable:"<SetActionStats.EstimatedSizeDiscrepancyMessage>"
                    SetActionStats.SetRecords
                    SetActionStats.SetCommitHighWater
                        label is "HighWater"
                    visible when (not SetActionStats.EstimatedSetSizeComputed)
                        SetActionStats.DerEstimatedSetSizeUnknown
                        SetActionStats.DerEstimatedSetSizeUnknown
                column2
                    SetActionStats.SetCommits
                        label is "NumberCommits"
                    SetActionStats.SetCommitObjects
                        label is "ObjectsCommitted"
                    SetActionStats.SetAverageObjectPerCommit
                        label is "AverageObjectsPerCommit"
                    SetActionStats.SetFailedObjects
                        label is "FailedPendingCommit"
                        display as tag
                            color of red
                column3
                    SetActionStats.CheckPointDurationSeconds
                        label is "CheckPointDurationSeconds"
                    SetActionStats.SetAverageCheckPointDurationSeconds
                        label is "AverageCheckpointDurationSeconds"
                    SetActionStats.CheckPointHighwaterSeconds
                        label is "CheckPointHighwaterSeconds"
            visible when (CanViewRunningStatistics)
                single column
                    button of "ViewRunningStatistics"
                        link is ViewRunningStatistics
                        display as link
