Main is a Form
    Layout
        two column
            column1
                paragraph
                    ThirdParty
                        label is "TaxSystem"
                        when value changed
                            refresh AccrualCodeRequired
                    visible when (ThirdParty.Sabrix)
                        OneSourceVersionType
                single column
                    UseTaxCodeAccounts
                        label is "UseTaxCodeAccounts"
                        when value changed
                            refresh AccrualCodeRequired
                            refresh TaxOutputAccountRequired
                            refresh TaxInputAccountRequired
                            refresh TaxOutputDueAccountRequired
                            refresh TaxInputDueAccountRequired
                            refresh TaxIDRequired
                            refresh TaxPointRequired
                            refresh TaxTermsRequired
                    VendorGroup
                        display as required when (VendorGroupRequired)
                        when value changed
                            refresh VendorGroupRequired
            column2
                TaxableAmountEdit
                ApprovalRequired
                    label is "ApprovalRequired"
                AccrualCode
                    label is "AccountsPayableTaxAccrualCode"
                    display as required when (AccrualCodeRequired)
                    when value changed
                        refresh AccrualCodeRequired
                        refresh VendorGroupRequired
        single column
            valid when (ThirdParty.VertexOSeries)
                TaxDistributionCode
            visible when (TaxDistributionCodeNotValid)
                text of "TaxDistributionCodeNotValidForThirdPartyOption;Distribution\\CodeWillNotBeUsed"
                    bold
                    color of blue
            TaxInputAccount
                label is "Input"
                compact format
                display as required when (TaxInputAccountRequired)
                when value changed
                    refresh TaxInputAccountRequired
            TaxInputDueAccount
                label is "InputDue"
                compact format
                display as required when (TaxInputDueAccountRequired)
                when value changed
                    refresh TaxInputDueAccountRequired
            TaxOutputAccount
                label is "Output"
                compact format
                display as required when (TaxOutputAccountRequired)
                when value changed
                    refresh TaxOutputAccountRequired
            TaxOutputDueAccount
                label is "OutputDue"
                compact format
                display as required when (TaxOutputDueAccountRequired)
                when value changed
                    refresh TaxOutputDueAccountRequired
        two column table
            column1
                paragraph
                    TaxID
                        label is "TaxIdentification"
                        display as required when (TaxIDRequired)
                        when value changed
                            refresh TaxIDRequired
                paragraph
                    TaxPoint
                        display as required when (TaxPointRequired)
                        when value changed
                            refresh TaxPointRequired
                            refresh TaxInputDueAccountRequired
                            refresh TaxOutputDueAccountRequired
                paragraph
                    AllowAccountChanges
                        label is "AllowAccountChanges"
                paragraph
                    PostOption
                        label is "PostOption"
            column2
                paragraph
                    AccruedOrInvoiced
                paragraph
                    TaxTerms
                        display as required when (TaxTermsRequired)
                        when value changed
                            refresh TaxTermsRequired
                paragraph
                    LandedCost
                        label is "LandedCost"
                paragraph
                    visible when (ThirdParty.Sabrix)
                        DelayTaxProcessing
                            label is "DelayTaxProcessing"
        header2 of "Tolerances"
        two column table
            column1
                paragraph
                    TaxToleranceLimit
                        label is "TaxableToleranceLimit"
            column2
                paragraph
                    TaxToleranceAmount
                        label is "TaxAmountToleranceLimit"
        paragraph
            FromRate
                label is "RateRange"
                display as required when (FromRateRequired)
                when value changed
                    refresh FromRateRequired
            ThruRate
                no label
                when value changed
                    refresh FromRateRequired
