RecipeContext is a Form
    Layout
        visible when (IsRecordExists)
            four column distributed
                column1
                    visible when (Item.UseLinkedImage)
                        Item.ImageURL
                            display as image
                    visible when (not Item.UseLinkedImage)
                        Item.Picture.File
                            display as image
                                missing image is random background
                                    foreground text is "<Item.ItemDescriptionAbbreviation>"
                column2
                    Item.CardViewItemWithDescription
                        label is "RecipeItem"
                        display as text
                    ItemGroup.ItemGroupDescription
                        label is "ItemGroup"
                        display as text
                column3
                    YieldDisplay
                        label is "RecipeYield"
                        display as text
                    ActiveDisplay
                        display as tag
                            color of red when (not Active)
                            color of green when (Active)
                column4
                    visible when (ItemGroup.UseIDMTemplate)
                        button of "View"
                            visible when (HasIDMDocument)
                            link is external "<DerivedIDMRecipeLink>"
                            label is "Document"
                            display as link
                        visible when (HasIDMJobError)
                            paragraph
                                IDMStatusMessage
                                    no label
                                    display as tag
                                        color of red
                                button of "View_IDM_Job"
                                    link is IDMJob
                                    display as link
                    visible when (not ItemGroup.UseIDMTemplate)
                        visible when (ItemGroup.RecipeManagementInUse)
                            NoIDMTemplateMessage
                                no label
                                display as tag
                                    color of blue
