InvoiceRegister is an ActionForm
    action is InvoiceRegister
    Layout
        single column
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            text of "Or"
            paragraph
                CompanyGroup
                    label is "CompanyGroup"
                CompanyGroup.Description
                    no label
                    display as text
            paragraph
                ProcessLevel
                    select is ProcessLevels
                ProcessLevel.Name
                    no label
                    display as text
            paragraph
                Customer
                    select is GroupSearchName
                Customer.Name
                    no label
                    display as text
        two column distributed
            column1
                FrInvoiceDate
                    label is "FromInvoiceDate"
            column2
                ToInvoiceDate
                    label is "ToInvoiceDate"
        single column
            text of "Or"
        two column distributed
            column1
                paragraph
                    FrInvAddSub
                        label is "FromDateAdjustment"
                    FrInvDays
                        label is "Days"
            column2
                paragraph
                    ToInvAddSub
                        label is "ToDateAdjustment"
                    ToInvDays
                        label is "Days"
        header2 of "_"
        text of "_"
        two column distributed
            column1
                FrGlDate
                    label is "FromPostingDate"
            column2
                ToGlDate
                    label is "ToPostingDate"
        single column
            text of "Or"
        two column distributed
            column1
                paragraph
                    FrGlAddSub
                        label is "FromDateAdjustment"
                    FrGlDays
                        label is "Days"
            column2
                paragraph
                    ToGlAddSub
                        label is "ToDateAdjustment"
                    ToGlDays
                        label is "Days"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InvoiceRegisterReport_RDG
            column2 of 25%
                InvoiceRegisterReport_XPT
