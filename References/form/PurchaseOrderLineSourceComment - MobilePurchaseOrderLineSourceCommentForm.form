MobilePurchaseOrderLineSourceCommentForm is a Form
    title is "Comment"
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        display as text
            two column
                column1 of 50%
                    PurchaseOrderLineSource.SourceDocumentLineNumber
                        label is "SourceLine"
                column2 of 50%
                    PurchaseOrderLineSource.SourceDocumentOrigin
                        label is "Origin"
        blank line
        single column
            CommentType
            CommentTitle
                label is "Title"
            CommentText
                label is "Text"
                use text area of 12 lines
        paragraph
            Attachment.Title
                label is "FileName"
            Attachment.File
            visible when (false)
                Attachment.MimeType
