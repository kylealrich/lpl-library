AttachmentForm is a Form
    is primary
    title is "BillingInvoiceAttachment"
    Layout
        paragraph
            BillingInvoice.DerivedDisplayBillingInvoice
                label is "BillingInvoice"
                display as text
        single column
            BillingInvoiceAttachment
                label is "AttachmentNumber"
                display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
            visible when (Company.FinanceEnterpriseGroup.EnableIDMForAttachments)
                EmailDistributionOption
                    raise yellow alert when (HasPDFStitchAttachment)
                        mouse over text is "<AlertTag>"
        paragraph
            Comment
