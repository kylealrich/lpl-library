LotAllocation is a Form
    Layout
        two column distributed
            column1
                display as text
                    Company.DerivedCompanyDisplay
                        label is "Company"
                    paragraph
                        WarehouseDemand.DemandDocument
                            label is "Document"
                        WarehouseDemandLine.LineNumber
                            label is "LineNumber"
                    visible when (WarehouseDemandLine.IsInventoriedOrNonStock)
                        paragraph
                            Item
                            Item.Description
                    visible when (WarehouseDemandLine.LineType.Special)
                        paragraph
                            WarehouseDemandLine.ItemDescription
                                label is "Item"
                    WarehouseDemandLine.ComponentSequence
                        label is "ComponentSequence"
                blank line
                paragraph
                    WarehouseDemandLineDetail.Lot
                paragraph
                    WarehouseDemandLineDetail.Sublot
                paragraph
                    WarehouseDemandLineDetail.Bin
                visible when (not HasItemLocationStockUOM)
                    paragraph
                        WarehouseDemandLineDetail.UnitOfMeasure
                    paragraph
                        Quantity
                visible when (HasItemLocationStockUOM)
                    paragraph
                        DerivedUOMDisplay
                    paragraph
                        TransientQuantityInLocationStockUOM
                paragraph
                    StockOnHandAvailable
                        display as text
                visible when (false)
                    TransientOnline
            column2
                display as text
                    InventoryLocation.DerivedInventoryLocationIDName
                        label is "Location"
                    WarehouseDemand.DemandSystemCode
                    WarehouseDemandLine.DemandDocumentType
