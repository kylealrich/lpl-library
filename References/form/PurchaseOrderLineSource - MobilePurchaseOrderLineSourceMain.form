MobilePurchaseOrderLineSourceMain is a Form
    title is "Main"
    Layout
        visible when (HasSourceDocument)
            paragraph
                TransientSourceDocument
                    label is "SourceDocument"
                    display as text
        visible when (not HasSourceDocument)
            paragraph
                TransientSourceDocument
                    label is "SourceDocument"
        paragraph
            Requester
                show up to 10 characters
            RequesterEmployeeRel.FirstLastName
                no label
                display as text
        paragraph
            RequestingLocation
                show up to 10 characters
            RequestingLocation.Name
                no label
                display as text
        single column
            DeliverTo
            paragraph
                RequestedDeliveryDate
                AllocationPriority
        blank line
        single column
            paragraph
                Quantity
                DeliveredQuantity
                    display as text
            EnteredUOM
                label is "UOM"
                display as text
