CopyComponentGroup is an ActionForm
    action is CopyComponentGroup
    Layout
        display as text
            paragraph
                ContractGroup
                Contract
                ContractLine.ItemNumber
                    label is "CurrentProcedure"
                Name
                    label is "CurrentComponentGroupName"
        paragraph
            ForProcedure
                select is ProcedureSelect
            ForProcedure.ItemNumber
                display as text
            ForProcedure.ItemDescription
                display as text
        single column
            NewComponentGroupName
            visible when (ForProcedure.CapitatedProcedure.PrimaryAndRevision)
                NewPrimaryDiscount
                NewRevisionDiscount
            visible when (not ForProcedure.CapitatedProcedure.PrimaryAndRevision)
                visible when (ForProcedure.CapitatedProcedure.PrimaryOnly)
                    NewPrimaryDiscount
                visible when (ForProcedure.CapitatedProcedure.RevisionOnly)
                    NewRevisionDiscount
            SetComponentGroupMaximumQuantityToZero
