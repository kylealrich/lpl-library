Options is a Form
    Layout
        two column
            column1
                header2 of "Invoice"
                blank line
                MaximumInvoiceAmount
                PrimeRate
                    label is "AnticipationRate"
                RequirePurchaseOrder
                PoolOption
                ValidateDiversityDates
                AutomaticEmailingOfCreditMemo
                AutomaticEmailingOfDebitMemo
                ValidateCertificationDate
                VendorRestrictions.RestrictedCompany
                    label is "RestrictedCompany"
                VendorRestrictions.RestrictedProcessLevel
                VendorRestrictions.RestrictedCompanyGroup
                PreferredVendor
                ExcludeInvoiceLineImport
            column2
                header2 of "Match"
                blank line
                HoldUntilInspected
                ChargebackMinimumAmount
                    label is "AutoChargebackMinimum"
                AutomaticChargebackHoldCode
                    label is "AutoChargebackHold"
                MatchTable
                RuleGroup
                AllowZeroCostInvoice
                TermsCalculation
                FloatDays
                CreatePOD
                RequireRemitTo
                RestrictToOneInvoice
                CostComponentMatch
                BypassInvoiceOnlyAOC
                blank line
        header2 of "Miscellaneous"
        single column
            OriginDate
            LanguageCode
                label is "Locale"
                compact format
            CaseNumber
            InvoiceRoutingCategory
                show up to 24 characters
        visible when (not HasLocation)
            header2 of "ProcurementCard"
            paragraph
                UseProcurementCard
                    label is "UseProcurementCard"
                visible when (UseProcurementCard)
                    ProcurementCardNumber
            header2 of "E\\D\\I"
            two column
                column1
                    EDINumber
                    EDIAutoRelease
                        label is "E\\D\\IInvoiceAutomaticRelease"
                column2
                    paragraph
                        ERSCapable
                            label is "ERSCapable"
                    visible when (ERSCapable)
                        paragraph
                            InvoiceReference
                                label is "E\\R\\SInvoiceReference"
            two column distributed
                column1
                    header2 of "ExpenseManagement"
                    paragraph
                        ExpenseDefault
                            compact format
