CashLedgerTransaction_Translation is a Form
    is primary
    Layout
        paragraph
            Base_BusinessClass.CashLedgerTransaction
                display as text
            Base_BusinessClass.CashCodeDisplay
                no label
                display as text
            Base_BusinessClass.TransactionCodeDisplay
                no label
                display as text
            Base_BusinessClass.TransactionNumberDisplay
                no label
                display as text
        single column
            IsoLocale
                compact format
                raise yellow alert when (VerifyTranslations)
                    mouse over text is untranslatable:"The base data has been changed but this translation has not been verified"
        single column
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.Description
                label is untranslatable:"Description"
            Description
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.ReconciliationStatementDescription
                label is untranslatable:"Reconciliation Statement Description"
            ReconciliationStatementDescription
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.PayeeName
                label is untranslatable:"Payee Name"
            PayeeName
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.MailingName
                label is untranslatable:"Mailing Name"
            MailingName
                label is untranslatable:"Translated"
