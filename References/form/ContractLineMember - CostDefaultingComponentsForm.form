CostDefaultingComponentsForm is a Form
    title is "CostDefaultingComponentsForContract<Contract.RepresentativeText>-Line<ContractLine>"
    Actions
        action is refresh
            label is "_"
    Layout
        paragraph
            display as text
                visible when (CompanyEntered)
                    ContractLineMember.Company.RepresentativeText
                        label is "Company"
                visible when (PricingGroupEntered)
                    ContractLineMember.PricingGroup.RepresentativeText
                        label is "PricingGroup"
                visible when (LocationEntered)
                    ContractLineMember.Location.RepresentativeText
                        label is "Location"
                visible when (ReqLocEntered)
                    ContractLineMember.RequestingLocation.RequestingLocationNameID
                        label is "RequestingLocation"
        single column
            UseForCostDefaulting
                label is "MemberCanBeUsedForCostDefaultingIfAllComponentsAreGreen:_"
                display as tag
                    color of green when (UseForCostDefaulting)
                    color of red when (not UseForCostDefaulting)
            visible when (Contract.IsManufacturerContract)
                paragraph
                    CanUseForCostDefaulting
                        label is "CanUseForCostDefaultingFlag:_"
                        display as tag
                            color of green when (CanUseForCostDefaulting)
                            color of red when (not CanUseForCostDefaulting)
                    text of "CanUseForCostDefaultingFlagIsDeterminedFromPurchaseMethod"
                        italics
            ContractLine.HasBeenActivated
                label is "LineHasBeenActivated:_"
                display as tag
                    color of green when (ContractLine.HasBeenActivated)
                    color of red when (not ContractLine.HasBeenActivated)
            ContractLine.LineClosed
                label is "LineIsClosed:_"
                display as tag
                    color of green when (not ContractLine.LineClosed)
                    color of red when (ContractLine.LineClosed)
            OnHold
                label is "LineOrLineMemberIsOnHold:_"
                display as tag
                    color of green when (not OnHold)
                    color of red when (OnHold)
            ErrorsExist
                label is "LineErrorsExist:_"
                display as tag
                    color of green when (not ErrorsExist)
                    color of red when (ErrorsExist)
            visible when (Contract.IsManufacturerContract)
                HoldManufacturerLineMemberOnly
                    label is "OnlyManufacturerLineIsOnHold:_"
                    display as tag
                        color of green when (not HoldManufacturerLineMemberOnly)
                        color of red when (HoldManufacturerLineMemberOnly)
            text of "CurrentDateMustAlsoBeWithinLineDateRangeOf<ContractLine.EffectiveDate>-<ContractLine.ExpirationDate>"
                italics
