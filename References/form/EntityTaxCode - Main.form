Main is a Form
    Layout
        two column table
            column1
                paragraph
                    AccruedOrInvoiced
                paragraph
                    TaxTerms
                paragraph
                    LandedCost
                        label is "LandedCost"
                paragraph
                    VendorGroup
            column2
                paragraph
                    TaxPoint
                paragraph
                    TaxID
                        label is "TaxIdentification"
                paragraph
                    AllowAccountChanges
                        label is "AllowAccountChanges"
                paragraph
                    AccrualCode
                        label is "AccountsPayableTaxAccrualCode"
        paragraph
            valid when (TaxEntity.ThirdParty.VertexOSeries)
                TaxDistributionCode
            visible when (TaxDistributionCodeNotValid)
                text of "TaxDistributionCodeNotValidForThirdPartyOption;Distribution\\CodeWillNotBeUsed"
                    bold
                    color of blue
        paragraph
            TaxInputAccount
                compact format
        paragraph
            TaxInputDueAccount
                label is "InputDue"
                compact format
        paragraph
            TaxOutputAccount
                label is "Output"
                compact format
        paragraph
            TaxOutputDueAccount
                label is "OutputDue"
                compact format
        paragraph
            PostOption
                label is "PostOption"
                    left of field
        header2 of "Tolerances"
        paragraph
            TaxToleranceLimit
                label is "TaxableToleranceLimit"
        paragraph
            FromRate
                label is "RateRange"
            ThruRate
                no label
        paragraph
            TaxToleranceAmount
                label is "TaxAmountToleranceLimit"
