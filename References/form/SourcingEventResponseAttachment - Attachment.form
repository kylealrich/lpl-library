Attachment is a Form
    is primary
    title is "SourcingEventResponseAttachment"
    Actions
        action is save
        action is save and close
    Layout
        four column distributed
            Company
                display as text
            SourcingEvent.RepresentativeText
                display as text
            NotifiedSupplier.Supplier.RepresentativeText
                display as text
            NotifiedSupplier.SupplierSourceId.RepresentativeText
                display as text
        blank line
        visible when (AttachmentExists)
            single column
                SeqNumber
                    label is "AttachmentNumber"
                    display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
