MobilePFIRequisition is a CompositeForm
    title is "_"
    context form is MobilePFIRequisitionContext
        background is theme color
    restrict action Unreleased.Create
    restrict action Unreleased.Delete
    restrict action IssueFinal
    restrict action IssueDraft
    restrict action Release
    restrict action Unreleased.RSSLPLCreate
    restrict action Unreleased.RSSLPLDelete
    restrict action Unreleased.RSSLPLShop
    restrict action Unreleased.CreateUsingCopyFromTemplate
    restrict action Unreleased.CreateUsingCopyFromRequisition
    restrict action Unreleased.UpdateRequisitionLineFillOrKill
    restrict action Unreleased.RSSLPLCreateUsingCopyFromRequisition
    restrict action Unreleased.RSSLPLCreateUsingCopyFromTemplate
    restrict action Unreleased.RSSLPLCopyAllLinesFromRequisition
    Actions
        action is Released.ManualApprove
            action icon is approve
            label is "Approve"
        action is Released.ManualReject
            action icon is reject
            label is "Reject"
        action is Released.ManualUnrelease
            action icon is undo
            label is "Unrelease"
    Lines is a Panel
        list is RequisitionLinesRel.MobileViewOnlyRequisitionLines
    Comments is a Panel
        visible when (CommentsExist)
        list is RequisitionCommentRel.PfiCommentsCardList
    Additional is a Panel
        form is MobileApproverMainForm
    ApprovalProgress is a Panel
        visible when (first PfiWorkunitRel.HasProcessIndicator)
        form is ProcessIndicatorForm
