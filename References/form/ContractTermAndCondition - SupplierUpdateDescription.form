SupplierUpdateDescription is an ActionForm
    action is SupplierUpdateDescription
    title is "RequestToUpdateTerm_andCondition"
    Layout
        paragraph
            ContractArticle
                label is "Article"
                display as text
            ContractArticle.Title
                no label
                display as text
        paragraph
            ContractTermAndCondition
                label is "Term_andCondition"
                display as text
            Title
                no label
                display as text
        visible when (ActiveUpdatesToTextExist)
            single column
                DerivedCompareCurrentPreviousHeaderText
                    label is "ChangesToHeaderText"
                    display as text
                DerivedCompareCurrentPreviousDescription
                    label is "ChangesToDescription"
                    display as text
        visible when (HasVariables)
            single column
                text of "TermsContainVariables-DefinedWithBrackets"
                    italics
                text of "ClickButtonToViewProposedTermsWithVariableValues"
                    italics
                button of "Terms"
                    link is TermsWithValues
        single column
            visible when (ShowTermTitleField)
                PrmRequestedTitle
                    label is "NewTitle"
                PrmRequestedHeaderText
                    label is "NewHeaderText"
            visible when (not ShowTermTitleField)
                PrmRequestedHeaderText
                    label is "NewTitle"
            PrmRequestedDescription
                label is "NewDescription"
                use text area of 15 lines
            PrmComment
                label is "Comment"
                use text area of 3 lines
