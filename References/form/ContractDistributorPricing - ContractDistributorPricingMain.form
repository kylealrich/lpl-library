ContractDistributorPricingMain is a Form
    is primary
    title is "ContractDistributorPricing"
    Layout
        display as text
            four column distributed
                column1
                    Contract.RepresentativeText
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                column3
                    Contract.WorkingContractID
                column4
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        header2 of "_"
        paragraph
            ContractDistributorPricing
                label is "PricingIdentifier"
            Title
            DefaultDistributorPricing
                label is "DefaultPricing"
        single column
            Description
                use text area of 5 lines
        header3 of "DistributorPricing"
        paragraph
            DistributorPricing.PricingMarkupDiscount
                label is "Type"
            visible when (not DistributorPricing.PricingMarkupDiscount.Fixed)
                DistributorPricing.DistributorPricingAmtPct.PricingCost
                    label is "Cost"
                visible when (CannotUpdateGPO)
                    DistributorPricing.DistributorPricingAmtPct.PricingPercent
                        label is "Percent"
                        display as text
                visible when (not CannotUpdateGPO)
                    DistributorPricing.DistributorPricingAmtPct.PricingPercent
                        label is "Percent"
        header3 of "DistributorFreightFactor"
        paragraph
            DistributorFreightPricing.FreightPricingMarkupDiscount
                label is "MarkupOrDiscount"
            DistributorFreightPricing.DistributorFreightPricingAmtPct.FreightCost
                label is "Cost"
            DistributorFreightPricing.DistributorFreightPricingAmtPct.FreightPercent
                label is "Percent"
