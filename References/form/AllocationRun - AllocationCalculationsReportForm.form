AllocationCalculationsReportForm is a SummaryForm
    title is "AllocationCalculationReport"
    First Page Header
        Layout
            CurrentDate
                label is "CurrentDateAndTime"
                right align
    Layout
        header3 of "AllocationCalculation"
            center
        blank line
        two column
            column1
                AllocationRun
                    label is "AllocationRun"
                    display when blank
                AllocationControl
                    label is "AllocationControl"
                    display when blank
                paragraph
                    AllocationControl.Calendar
                        label is "Calendar"
                        display when blank
                    AllocationPeriod.PeriodType
                        label is "PeriodType"
                        display when blank
                Allocation
                    label is "Allocation"
                    display when blank
                AllocationGroup
                    label is "AllocationGroup"
                    display when blank
                visible when (AllocationControl.Type.Actuals)
                    CurrencyTable
                GenerateListingData
                    label is "GenerateReports"
                    display when blank
            column2
                AllocationPeriod
                    label is "AllocationPeriod"
                    display when blank
                visible when (AllocationControl.Type.Actuals)
                    PostingDate
                        label is "PostingDate"
                        display when blank
                visible when (AllocationControl.Type.Budget)
                    PostingDate
                        label is "Date"
                        display when blank
                paragraph
                    FromStep
                        label is "FromStep"
                        display when blank
                    ToStep
                        label is "ToStep"
                        display when blank
                CalculationReportStatus
                    label is "Status"
                    display when blank
                ErrorCount
                    label is "ErrorCount"
                    display when blank
                create stamp
                    label is "RunDate/Time"
                GenerateSourceValue
                    label is "IncludeSourceDetails"
        form is AllocationDetailByStepHeaderForReportRel.AllocationListingReportForm
        form is AllocationDetailByCurrencyAndRunRel.AllocationListingCurrencySummaryForReportForm
