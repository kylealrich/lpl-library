ItemClassesAndCodes is a Form
    Layout
        two column distributed
            column1
                paragraph
                    MajorInventoryClass
                        show up to 10 characters
                    MajorInventoryClass.Description
                        no label
                        display as text
                    MinorInventoryClass
                        show up to 10 characters
                    MinorInventoryClass.Description
                        no label
                        display as text
            column2
                paragraph
                    FreightClass
                        show up to 10 characters
                    FreightClass.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    MajorPurchasingClass
                        show up to 10 characters
                    MajorPurchasingClass.Description
                        no label
                        display as text
                    MinorPurchasingClass
                        show up to 10 characters
                    MinorPurchasingClass.Description
                        no label
                        display as text
            column2
                paragraph
                    ICNCode
                        show up to 10 characters
                    ICNCode.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    MajorSalesClass
                        show up to 10 characters
                    MajorSalesClass.Description
                        no label
                        display as text
                    MinorSalesClass
                        show up to 10 characters
                    MinorSalesClass.Description
                        no label
                        display as text
            column2
                paragraph
                    HazardCode
                        show up to 15 characters
                    HazardCode.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    MajorPPEClass
                        show up to 10 characters
                    MajorPPEClass.Description
                        no label
                        display as text
                    MinorPPEClass
                        show up to 10 characters
                    MinorPPEClass.Description
                        no label
                        display as text
            column2
                LocalCode
        two column distributed
            paragraph
                CommodityCode
                CommodityCode.CcDescription
                    no label
                    display as text
            paragraph
                UNSPSCCode
                    compact format
                UNSPSCCode.LongDescription
                    no label
                    display as text
        visible when (IsHSNSACCodeEnabled)
            paragraph
                HSNSACCode
                HSNSACCode.Description
                    no label
                    display as text
        header2 of "TaxInformation"
        two column distributed
            PurchaseTaxable
            paragraph
                PurchaseTaxCode
                PurchaseTaxCode.Description
                    no label
                    display as text
        paragraph
            ProductTaxCategory
            ProductTaxCategory.Description
                no label
                display as text
        header2 of "SpecialHandling"
        two column distributed
            column1
                paragraph
                    SpecialHandlingCode
                        select is ItemGroup.SpecialHandlingCode set.ActiveSpecialHandlingCodes
                    SpecialHandlingCode.Description
                        no label
                        display as text
                visible when (SpecialHandlingCode.SpecialHandlingCodeExists)
                    SpecialHandlingInstructions
                        label is "SpecialHandlingInstructions"
                        use text area of 5 lines
        visible when (SpecialHandlingCode.SpecialHandlingCodeExists)
            single column
                SpecialHandlingCode.TimeSensitive
                    label is "TimeSensitive"
            visible when (SpecialHandlingCode.IsTimeSensitive)
                HandlingTimeInMinutes
                    label is "HandlingTimeInMinutes"
