ElectronicPayments is an ActionForm
    action is ElectronicPayments
    Layout
        single column
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            paragraph
                Customer
                    select is GroupSearchName
                Customer.Name
                    no label
                    display as text
            paragraph
                EpType
                    label is "ElectronicPaymentType"
                    select is CompanyElectronicPaymentTypes
                EpType.Description
                    no label
                    display as text
            EpAccount
                label is "ElectronicPaymentAccount"
        two column distributed
            column1
                FrSettleDate
                    label is "FromSettlementDate"
            column2
                ToSettleDate
                    label is "ToSettlementDate"
        single column
            text of "Or"
        two column distributed
            column1
                paragraph
                    FrSettleAddSub
                        label is "FromDateAdjustment"
                    FrSettleDays
                        label is "Days"
            column2
                paragraph
                    ToSettleAddSub
                        label is "ToDateAdjustment"
                    ToSettleDays
                        label is "Days"
        two column distributed
            column1
                FrSettleBatchId
                    label is "FromSettlementBatchIdentification"
                FrEpTransId
                    label is "FromElectronicPaymentTransactionI\\D"
                FrOrderNbr
                    label is "FromOrderNumber"
                    select is OrdersByOrderNumber
            column2
                ToSettleBatchId
                    label is "ToSettlementBatchIdentification"
                ToEpTransId
                    label is "ToElectronicPaymentTransactionI\\D"
                ToOrderNbr
                    label is "ToOrderNumber"
                    select is OrdersByOrderNumber
        three column distributed
            visible when (not Company.ManualInvoiceNumbering)
                InvcPrefixGrp
                    label is "Invoice"
                    compact format
                    select is InvoicesByInvoiceNumber
                FrInvcNumber
                    no label
                    compact format
                    select is InvoicesByInvoiceNumber
                ToInvcNumber
                    label is "-"
                    compact format
                    select is InvoicesByInvoiceNumber
        single column
            SortOption
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ElectronicPaymentsReport_RDG
            column2 of 25%
                ElectronicPaymentsReport_XPT
