Main is a Form
    title is "Main"
    Layout
        four column distributed
            column1
                visible when (not ReceivableInvoiceExists)
                    paragraph
                        Customer
                            select is CustomerContextCompanyCustomerSelectList
                        Customer.Name
                            no label
                            display as text
                visible when (ReceivableInvoiceExists)
                    paragraph
                        Customer
                            display as text
                        Customer.Name
                            no label
                            display as text
            column2
                paragraph
                    visible when (IsReleased)
                        ReceivableInvoiceType
                            label is "Type"
                            display as text
                    visible when (IsUnreleased)
                        ReceivableInvoiceType
                            label is "Type"
            column3
                paragraph
                    ReceivableInvoice
                        label is "InvoiceNumber"
                        display as text
            column4
                paragraph
                    Description
        four column distributed
            column1
                paragraph
                    TransientSignedTransactionAmountForUI
                        label is "Amount"
                        display as text
                    OriginalCurrency
                        no label
                        display as text
            column2
                paragraph
                    TransactionDate
                        display as text
            column3
                paragraph
                    TransactionUserField1
                        label is "UserSortField"
                        display as text
            column4
                paragraph
                    CustomerPurchaseOrder
                        label is "PurchaseOrder"
        four column distributed
            column1
                paragraph
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                        display as text
            column2
                paragraph
                    TermsCode
                    TermsCode.Description.Desc[1]
                        no label
                        display as text
                    TermsCode.Description.Desc[2]
                        no label
                        display as text
            column3
                paragraph
                    CreditDebitMemoReason
                        label is "MemoReason"
                        select is ReceivableReasonCodeMemoList
                    CreditDebitMemoReason.Description
                        no label
                        display as text
            column4
                paragraph
                    InvoiceTypeCode
                        display as text
                        select is CustomerInvoiceTypeCodeList
                    InvoiceTypeCode.Description
                        no label
                        display as text
        four column distributed
            column1
                InvoiceEntryTemplate
                    display as text
            column2
                paragraph
                    RegimeCode
                        display as text
                    visible when (IsReleased)
                        button of "Intrastat"
                            sub form is IntrastatReleased
                            display as link
                    visible when (IsUnreleased)
                        button of "Intrastat"
                            sub form is Intrastat
                            display as link
            column3
                visible when (ParallelReferenceEnabled)
                    paragraph
                        ParallelReference
                            display as text
            column4
                paragraph
                    ProjectContract.Project.DisplayProject
                        label is "ProjectContract"
                        display as text
                    ProjectContract.Project.Description
                        no label
                        display as text
        four column distributed
            column1
                paragraph
                    visible when (Company.UseEWayBillNumber)
                        EWayBillNumber
                            display as text
            column2
                paragraph
                    visible when (ReceivableInvoiceType.MixedSignLines)
                        AlternateReceivableInvoiceType
                            label is "AlternateType"
                            display as text
            column3
                paragraph
                    visible when (IsCustomerOrder)
                        CustomerOrderRel.VATRegistrationNumber
                            label is "VATRegistrationNumber"
                    visible when (not IsCustomerOrder)
                        visible when (VATRegistrationNumberEntered)
                            CompanyCustomerRel.VATRegistrationNumber
                                label is "VATRegistrationNumber"
                                display as text
            column4
                visible when (IsBillingDescriptionEntered)
                    Description2
                        label is "BillingInvoiceDescription"
        four column distributed
            visible when (CompanyCustomerRel.Affiliate)
                CompanyCustomerRel.Affiliate
                    label is "Affiliate"
            visible when (Company.VoucherReference)
                VoucherReferenceNumber
                    display as text
        header2 of "<DueDateLabel>"
        paragraph
            visible when (ShowFirstDueDate)
                FirstDueDate
                    display as text
            visible when (IsUnreleased)
                DueDate
            visible when (IsTermsFieldsOverridden)
                DueDate
                    display as text
            visible when (IsUnreleased)
                DiscountDate
            visible when (IsTermsFieldsOverridden)
                DiscountDate
                    display as text
            visible when (IsUnreleased)
                DiscountAmount
                    label is "Amount"
            visible when (IsTermsFieldsOverridden)
                DiscountAmount
                    label is "Amount"
                    display as text
            visible when (IsUnreleased)
                DiscountPercent
                    label is "Percent"
            visible when (IsTermsFieldsOverridden)
                DiscountPercent
                    label is "Percent"
                    display as text
