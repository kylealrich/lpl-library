ProcessingCountsForm is a Form
    Layout
        display as text
            header3 of "ProcessingCounts"
        visible when (HasTransactionsCreated)
            paragraph
                ReceivableInterfaceCounts.TotalHeaderCount
                    label is "TransactionsProcessed"
                visible when (IsTransactionInterface)
                    InterfacedTransactionsCount
                        label is "Successful"
                visible when (IsTransactionConversion)
                    TransactionsSuccessfulCount
                        label is "Successful"
                visible when (IsTransactionInterface)
                    InterfaceInvoiceErrorCount
                        label is "Errors"
                visible when (IsTransactionConversion)
                    ConversionInvoiceErrorCount
                        label is "Errors"
            blank line
            single column
                visible when (IsTransactionInterface)
                    ReceivableInterfaceCounts.DetailCount
                        label is "TransactionLinesProcessed"
                    ReceivableInterfaceCounts.DistributionCount
                        label is "DistributionsProcessed"
                    ReceivableInterfaceCounts.CommentCount
                        label is "CommentsProcessed"
        visible when (HasTransactionsNotCreated)
            paragraph
                ReceivableInterfaceCounts.TotalHeaderCount
                    label is "TransactionsProcessed"
                TransactionsSuccessfulCount
                    label is "Successful"
                ReceivableInterfaceCounts.TotalHeaderCount
                    label is "Errors"
        visible when (HasPaymentsNotCreated)
            paragraph
                visible when (Payment2OrDocumentInterface)
                    ReceivableInterfaceCounts.DetailCount
                        label is "TransactionsProcessed"
                    TransactionsSuccessfulCount
                        label is "Successful"
                    ReceivableInterfaceCounts.DetailCount
                        label is "Errors"
                visible when (not Payment2OrDocumentInterface)
                    ReceivableInterfaceCounts.TotalHeaderCount
                        label is "TransactionsProcessed"
                    TransactionsSuccessfulCount
                        label is "Successful"
                    ReceivableInterfaceCounts.TotalHeaderCount
                        label is "Errors"
        visible when (IsConversionApplication)
            paragraph
                RecordsProcessed
                    label is "ApplicationsProcessed"
                ReceivableInterfaceCounts.PassedHeaderCount
                    label is "Successful"
                TotalDispDistCommentErrorsProcessed
                    label is "Errors"
            blank line
            single column
                ReceivableInterfaceCounts.AdditionalDetailCount
                    label is "ApplicationAdjustmentsProcessed"
                TotalRecordsProcessed
                    label is "TotalRecordsProcessed"
        visible when (HasPaymentsCreated)
            paragraph
                ReceivableInterfaceCounts.TotalHeaderCount
                    label is "InterfacedPaymentsProcessed"
                PaymentSuccessfulCount
                    label is "Successful"
                PaymentErrorCount
                    label is "Errors"
            blank line
            single column
                visible when (PaymentInterfaceTypeNotPayment2)
                    ReceivableInterfaceCounts.BatchCount
                        label is "PaymentBatchesProcessed"
                visible when (not NonARPaymentInterfaceType)
                    paragraph
                        ReceivableInterfaceCounts.AdditionalDetailCount
                            label is "PaymentRemittancesProcessed"
                        visible when (Payment2OrDocumentInterface)
                            RemitSuccessfulCount
                                label is "Successful"
                            RemitErrorCount
                                label is "Errors"
                visible when (NonARPaymentInterfaceType)
                    ReceivableInterfaceCounts.AdditionalDetailCount
                        label is "PaymentDistributionsProcessed"
                visible when (Payment2OrDocumentInterface)
                    TotalPayment2Count
                        label is "TotalRecordsProcessed"
                visible when (PaymentInterfaceTypeNotPayment2NotNonAR)
                    RecordsProcessed
                        label is "TotalRecordsProcessed"
        visible when (IsDispDistCommConversion)
            paragraph
                RecordsProcessed
                    label is "TransactionsProcessed"
                ReceivableInterfaceCounts.TotalHeaderCount
                    label is "Successful"
                TotalDispDistCommentErrorsProcessed
                    label is "Errors"
