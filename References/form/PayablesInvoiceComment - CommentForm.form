CommentForm is a Form
    is primary
    title is "InvoiceComment"
    Layout
        header2 of "InvoiceInformation"
        display as text
            three column distributed
                column1
                    PayablesInvoice.DerivedCompanyNameID
                        label is "Company"
                    PayablesInvoice.DerivedVendorNameID
                    PayablesInvoice.Invoice
                column2
                    PayablesInvoice.Status
                    PayablesInvoice.InvoiceDate
                    PayablesInvoice.VoucherNumberDisplay
                column3
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    PayablesInvoice.DueDate
                    visible when (PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.ProcessingTeam
                    visible when (not PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.APClerk.PreferredSimplePresentationName
                            label is "Processor"
        header2 of "Comment"
        two column
            Title
            visible when (Type.VendorReturn)
                Type
                    display as text
            visible when (not Type.VendorReturn)
                DisplayCommentType
        single column
            Comment
                use text area of 12 lines
            SupplierCanView
