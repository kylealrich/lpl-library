Submit is a Form
    title is "SubmitResponse"
    Layout
        single column
            visible when (NotSubmitted)
                text of "IMPORTANT-IfYouIntendToSubmitTheResponse,PleaseRunThe_SubmitAction"
                    header2
                    bold
                    color of red
        visible when (RequirementsNotSatisfied)
            paragraph
                text of "<RequiredHeader>"
                    header3
                    bold
            visible when (SomeLineRequired)
                paragraph
                    text of "<RequiredLine>"
            visible when (RequiredQuestionHeaderCondition)
                paragraph
                    text of "<RequiredQuestionHeader>"
            visible when (RequiredQuestionLineCondition)
                paragraph
                    text of "<RequiredQuestionLine>"
                single column
                    blank line
        visible when (CanViewSubmittedText)
            paragraph
                text of "<SubmittedText>"
                    header2
                    bold
        visible when (WarningHeaderCondition)
            paragraph
                text of "<WarningHeader>"
                    header2
                    bold
            visible when (NoResponseLineCondition)
                paragraph
                    text of "<NoResponseLine>"
            visible when (NoResponseQuestionHeaderCondition)
                paragraph
                    text of "<NoResponseQuestionHeader>"
            visible when (NoResponseQuestionLineCondition)
                paragraph
                    text of "<NoResponseQuestionLine>"
            visible when (NoResponseAOCCondition)
                paragraph
                    text of "<NoResponseAOC>"
            visible when (NoResponseBidBondCondition)
                paragraph
                    text of "<NoResponseBidBond>"
            single column
                blank line
        visible when (ResponseExists)
            paragraph
                text of "<SubmissionDate>"
                    header2
                    italics
