HoldAPPaymentsReport is an ActionForm
    action is HoldAPPaymentsReport
    Layout
        two column
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            ProcLevel
                label is "ProcessLevel"
                select is ProcessLevels
        blank line
        single column
            InvoicesOnHold
                label is "IncludeInvoices_onHold"
        single column
            VendorOnHold
                label is "IncludeVendors_onHold"
        single column
            IncludeVendorLocs
                label is "IncludeVendorLocations"
        single column
            OutOfBalInvoices
                label is "IncludeOut_ofBalanceInvoices"
        single column
            CommentsOption
                label is "IncludeComments"
        single column
            VendorSequence
        blank line
        two column
            FrVendorRange
                label is "FromVendor"
                select is VendorName
            ToVendorRange
                label is "ToVendor"
                select is VendorName
        blank line
        single column
            text of "HoldCodes"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                HoldAPPaymentsReportReport_RDG
            column2 of 25%
                HoldAPPaymentsReportReport_XPT
