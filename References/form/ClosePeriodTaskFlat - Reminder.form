Reminder is an ActionForm
    action is Reminder
    Layout
        header3 of "ReminderAbout_<TaskName>_For_<ClosePeriod.CloseCalendarPeriod>_<ClosePeriod.CloseCalendar>"
        single column
            TaskStatus
                label is "Status"
                display as text
        five column
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.BeginDate
                label is "ScheduledBegin"
                display as text
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.BeginTime
                no label
                display as text
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.DueDate
                label is "Due"
                display as text
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.DueTime
                no label
                display as text
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.LevelOfEffort
                label is "Effort"
                display as text
        visible when (EstimateForTask entered)
            five column
                ClosePeriodTaskFlat.DetailPeriodTask.EstimateForTask.BeginDate
                    label is "EstimatedBegin"
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.EstimateForTask.BeginTime
                    no label
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.EstimateForTask.DueDate
                    label is "Due"
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.EstimateForTask.DueTime
                    no label
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.EstimateForTask.LevelOfEffort
                    label is "Effort"
                    display as text
        visible when (ActualForTask entered)
            five column
                ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.BeginDate
                    label is "ActualBegin"
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.BeginTime
                    no label
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.DueDate
                    label is "Due"
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.DueTime
                    no label
                    display as text
                ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.LevelOfEffort
                    label is "Effort"
                    display as text
        header3 of "EnterDetailsAboutThisReminder"
        single column
            paragraph
                ReminderBeginDate
                    label is "BeginDate"
                ReminderDueDate
                    label is "DueDate"
        single column
            ReminderDescription
                label is "Description"
            ReminderNotes
                label is "Notes"
                use text area of 5 lines
        header3 of "AddAnAttachmentOrURL"
        single column
            ReminderAttachment
                label is "Attachment"
            ReminderLink
                label is "URL"
