InventoryForecastTransfer is an ActionForm
    action is InventoryForecastTransfer
    Layout
        header2 of "TransferFrom"
        paragraph
            FromCompany
                label is "Company"
            FromCompany.Name
                no label
                display as text
        paragraph
            FromLocation
                label is "Location"
                show up to 10 characters
            FromLocation.Name
                no label
                display as text
        blank line
        header2 of "TransferTo"
        paragraph
            FirstToCompany
                label is "Company"
            FirstToCompany.Name
                no label
                display as text
        paragraph
            FirstToLocation
                label is "Location"
                show up to 10 characters
            FirstToLocation.Name
                no label
                display as text
        visible when (SecondToVisible)
            single column
                PercentOfFirst
                    label is "PercentToMove"
                    when value changed
                        PercentOfSecond =  (100 - PercentOfFirst)
        SecondToVisible
            label is "AddSecondaryLocation"
            when value changed
                SecondToCompany =  blank
                SecondToLocation =  blank
        visible when (SecondToVisible)
            header2 of "SecondaryLocation"
            paragraph
                SecondToCompany
                    label is "Company"
                SecondToCompany.Name
                    no label
                    display as text
            paragraph
                SecondToLocation
                    label is "Location"
                    show up to 10 characters
                SecondToLocation.Name
                    no label
                    display as text
            paragraph
                PercentOfSecond
                    label is "PercentToMove"
                    display as text
        header2 of "Options"
        single column
            DeleteRecord
                label is "DeleteFromForecastRecords"
            Exceptions
                label is "PrintOnlyExceptions"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InventoryForecastTransferReport_RDG
            column2 of 25%
                InventoryForecastTransferReport_XPT
