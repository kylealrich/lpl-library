Main is a Form
    title is "<ReceivableInvoiceType>_<ReceivableInvoice>_Add_On_Charge"
    Layout
        four column distributed
            column1
                ReceivableAddOnCharge
                    label is "AddOnCharge"
                    select is AddOnChargesSlectList
                    show up to 15 characters
            column2
                FlatAmount
                    label is "FlatAmount"
            column3
                AmountPercent
                    label is "Percent"
        header2 of "Tax"
        four column distributed
            column1
                paragraph
                    Taxable
                        label is "Taxable"
                    TaxCode
                        label is "TaxCode"
                        show up to 10 characters
            column2
                ProductTaxCategory
            column3
                TaxUsageCode
            column4
                visible when (IsHSNSACCodeEnabled)
                    HSNSACCode
                visible when (not IsHSNSACCodeEnabled)
                    UNSPSCCode
                        compact format
        header2 of "Project"
        four column distributed
            column1
                FinanceDimension2
            column2
                ProjectContract
            column3
                Project
        visible when (ReceivableInvoice.ShowDetailedFinanceStructure)
            header2 of "DetailFinanceStructure"
            InvoiceFinanceCodeBlock
                label is "InvoiceAccrualAccount"
                compact format
