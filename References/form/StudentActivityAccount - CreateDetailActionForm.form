CreateDetailActionForm is an ActionForm
    action is CreateActivityAccountDetail
    Layout
        paragraph
            StudentActivityDistrict
                label is "SchoolDistrict"
                display only
            StudentActivityDistrict.Name
                no label
                display as text
        two column
            column1
                PrmActivityLevel
                    label is "ActivityLevel"
                    display only
                PrmStudentActivityAccount
                    label is "Activity"
            column2
                StudentActivityType
                    label is "ActivityType"
                    display only
                PrmDescription
                    label is "Description"
        paragraph
            StudentActivityAccount
                label is "ParentAccount"
                display only
            Description
                no label
                display as text
            visible when (not StudentActivityType.Asset)
                PrmFeeAmount
                    label is "FeeAmount"
        single column
            PrmGLAccount
                label is "GLAccount"
                compact format
        paragraph
            PrmActive
                label is "Active"
