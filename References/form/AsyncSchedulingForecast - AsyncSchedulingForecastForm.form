AsyncSchedulingForecastForm is a Form
    is primary
    title is "SchedulingForecast"
    Layout
        single column
            AsyncSchedulingForecast
        paragraph
            Description
            LastForecastTime
                display only
                display with time zone
                time zone is TimeZone
        paragraph
            TimeSliceSize
            TimeZone
                when value changed
                    refresh DerTimeZoneMatch
            SliceDataFormat
        paragraph
            RequestsToInclude
            ExcludeSystemRequests
        paragraph
            StartTimeOffset
                when value changed
                    StartTime =  DerivedStartTime
            visible when (not StartTimeOffset.Specify)
                StartTimeMultiplier
        visible when (StartTimeOffset.Specify)
            paragraph
                StartTime
                    time zone is TimeZone
                visible when (not DerTimeZoneMatch)
                    DerAltStartTime
                        label is "StartTimeInTimeZone<ContextTimeZone>"
                        display with time zone
                        time zone is TransContextTimeZone
        paragraph
            DurationOption
                when value changed
                    EndTime =  DerivedEndTime
            visible when (not DurationOption.Specify)
                DurationLength
        visible when (DurationOption.Specify)
            paragraph
                EndTime
                    time zone is TimeZone
                visible when (not DerTimeZoneMatch)
                    DerAltEndTime
                        label is "EndTimeInTimeZone<ContextTimeZone>"
                        display with time zone
                        time zone is TransContextTimeZone
