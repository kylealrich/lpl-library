ConsoleDetailForm is a Form
    Actions
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Layout
        header2 of "_"
        two column distributed
            column1
                ShortDisplayName
                    no label
                    header1
                    bold
                    display as text
                    raise red alert when (Status.Invalid)
                        mouse over text is "Invalid"
                    raise yellow alert when (Status.Inactive)
                        mouse over text is "Inactive"
                    raise green alert when (Status.Active)
                        mouse over text is "Active"
                paragraph
                    visible when (InViewContext)
                        BusinessView
                            header3
                            display as text
                    EntityType
                        header3
                        display as text
                    visible when (IsOverriddenByPersonalization)
                        OverriddenCount
                            label is "Overridden"
                            header3
                            display as tag
                                color of orange
                    visible when (Independent)
                        Independent
                            header3
                            display as tag
                                color of blue
            column2
                DerivedLastChange
                    no label
                    display as text
                paragraph
                    button of "Edit"
                        visible when (CanEdit)
                        action is Edit
                        is primary
                    button of "Activate"
                        visible when (CanActivate)
                        action is Activate
                    button of "Deactivate"
                        visible when (CanDeactivate)
                        action is Deactivate
                    button of "MakePersonalization"
                        visible when (IsMakePersonalizationValid)
                        action is MakePersonalization
                    button of "Share"
                        visible when (IsShareable)
                        action is SharePersonalization
                    button of "MakeConfiguration"
                        visible when (IsMakeConfigurationValid)
                        action is MakeConfiguration
                    button of "ConfigureProductLine"
                        valid when (CanGUIEditProdLine)
                        visible when (EntityType.ProductLine)
                        action is ConfigureProductLine
                visible when (ConfigEntityExists)
                    paragraph
                        visible when (ShowBusClassLplLink)
                            button of "ViewBusinessClassLPL"
                                link is LPLViewer
                                align as label
                                display as link
                        visible when (HasBaseListLPL)
                            button of "<ViewUILPLMessage>"
                                link is LPLListViewer
                                align as label
                                display as link
                        visible when (HasBaseFormLPL)
                            button of "<ViewUILPLMessage>"
                                link is LPLFormViewer
                                align as label
                                display as link
                        visible when (HasBaseCardViewLPL)
                            button of "<ViewUILPLMessage>"
                                link is LPLCardViewer
                                align as label
                                display as link
                        visible when (HasBaseDrillListLPL)
                            button of "<ViewUILPLMessage>"
                                link is LPLDrillListViewer
                                align as label
                                display as link
                        visible when (HasBasePageLPL)
                            button of "<ViewUILPLMessage>"
                                link is LPLPageViewer
                                align as label
                                display as link
                        visible when (HasBaseMenuLPL)
                            button of "<ViewUILPLMessage>"
                                link is LPLMenuViewer
                                align as label
                                display as link
                        visible when (HasBaseWebApplicationLPL)
                            button of "ViewBaseLPL"
                                link is LPLWebAppViewer
                                align as label
                                display as link
                        visible when (HasBaseLPL)
                            button of "CompareAgainstBase"
                                link is CompareAgainstCurrentApplicationVersion
                                align as label
                                display as link
                        visible when (EntityType.BusinessClass)
                            button of "KeyFieldDefinition"
                                link is BusinessClassKeyFieldNav
                                align as label
                                display as link
        single column
            LPL
                no label
                display as text
                use text area of 30 lines
            visible when (HasErrorText)
                paragraph
                    ErrorText
                        use text area of 5 lines
