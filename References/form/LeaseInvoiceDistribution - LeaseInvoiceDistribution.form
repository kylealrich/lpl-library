LeaseInvoiceDistribution is a Form
    Layout
        visible when (LeaseInvoice.Status.Unreleased)
            two column distributed
                column1
                    paragraph
                        LeaseInvoiceDistribution
                            label is "SequenceNumber"
                            display as text
                    paragraph
                        ExecutoryCostCode
                            label is "NonLeaseComponent"
                        ExecutoryCostCode.Description
                            no label
                            display as text
                    paragraph
                        InvoiceDistributionAccount
                            compact format
                    paragraph
                        DistributionAmount
                    paragraph
                        Description
                column2
                    paragraph
                        TaxIndicator
                    paragraph
                        TaxCode
                    paragraph
                        TaxUsageCode
                    paragraph
                        TransactionTaxableAmount
        visible when (not LeaseInvoice.Status.Unreleased)
            display as text
                two column
                    column1
                        paragraph
                            LeaseInvoiceDistribution
                                label is "SequenceNumber"
                        paragraph
                            ExecutoryCostCode
                                label is "NonLeaseComponent"
                            ExecutoryCostCode.Description
                                no label
                        paragraph
                            InvoiceDistributionAccount
                                compact format
                        paragraph
                            DistributionAmount
                        paragraph
                            Description
                    column2
                        paragraph
                            TaxIndicator
                        paragraph
                            TaxCode
                        paragraph
                            TaxUsageCode
                        paragraph
                            TransactionTaxableAmount
