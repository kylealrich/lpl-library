RegisterCustomerRepresentative is a Form
    title is "CompanyInformation"
    disable field options
    Layout
        header2 of "EnterInformationAboutYourCompany"
        single column
            CustomerName
                label is "*_CompanyName"
            DunAndBradstreetNumber
                label is "Dun&Bradstreet"
        single column
            TaxIdGroup.TaxIdType
                label is "*_TaxIDType"
        paragraph
            TaxIdGroup.TaxId
                label is "*_TaxID"
            text of "<TaxIdHelpText>"
                italics
        blank line
        header5 of "MailingAddress"
        MailingAddress
            form is PostalAddressMinimum
        single column
            text of "*__=_Required"
        visible when (false)
            paragraph
                LoginName
                Password
                ConfirmPassword
                MainContact
                EmailAddress
                TelephoneNumber
