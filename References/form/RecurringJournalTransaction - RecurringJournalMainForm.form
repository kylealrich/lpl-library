RecurringJournalMainForm is a Form
    propagate as a drill
    title is "Main"
    Layout
        two column distributed
            paragraph
                RecurringJournalControl.JournalType
                    label is "JournalType"
                    display only
                RecurringJournalControl
                    label is "JournalNumber"
                    display only
            RecurringJournalControl.Description
                label is "Description"
                display only
        two column distributed
            RecurringJournalControl.DerivedStatusDisplay
                label is "ProcessStatus"
                display only
            RecurringJournalControl.Status
                label is "JournalEntryStatus"
                display only
        two column distributed
            RecurringJournalTransaction
                display only
            CurrencyCode
                display only
        two column distributed
            FinanceCodeBlock
                label is "FinanceStructure"
                compact format
            FinanceCodeBlock.GeneralLedgerChartAccount.AccountDescription
        two column distributed
            paragraph
                TransactionAmount
                    label is "Amount"
                UnitsAmount
                    label is "Units"
            paragraph
                Volume
                VolumeRate
        two column distributed
            Reference
            Description
        two column distributed
            GeneralLedgerEvent
                label is "Event"
            AutoReverse
