Question is a Form
    title is "SourcingEventQuestion"
    Layout
        single column
            QuestionText
                use text area of 8 lines
            SourcingEventQuestionRel.ResponseType
        visible when (SourcingEventQuestionRel.EligibleForWeighting)
            single column
                SourcingEventQuestionRel.QuestionWeighting
        single column
            SourcingEventQuestionRel.AllowResponseAttachment
                label is "AllowAttachmentUploadWithAnswer"
        single column
            visible when (SourcingEventQuestionRel.NonYesNoResponseType)
                SourcingEventQuestionRel.ResponseRules
                    display as required when (SourcingEventQuestionRel.NonYesNoResponseType)
            visible when (SourcingEventQuestionRel.ResponseType.YesNoText)
                SourcingEventQuestionRel.YesNoTextResponseRules
                    display as required when (SourcingEventQuestionRel.ResponseType.YesNoText)
            visible when (SourcingEventQuestionRel.ResponseType.YesNo)
                SourcingEventQuestionRel.YesNoResponseRules
                    display as required when (SourcingEventQuestionRel.ResponseType.YesNo)
        single column
            visible when (EligibleForCM)
                CMQuestion
                    label is "SendQuestionToContractManagement"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        single column
            DisplayOrder
                display as text
