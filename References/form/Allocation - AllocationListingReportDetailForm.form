AllocationListingReportDetailForm is a Form
    title is "_"
    Layout
        six column
            column1
                header4 of "Allocation"
                    center
                text of "<DerivedCompositeFormTitle>"
                    center
                    align as label
            column2
                header4 of "TransactionLedger"
                    center
                DerivedLedger
                    no label
                    center
                    align as label
                    display when blank
            column3
                header4 of "SourceSystemCode"
                    center
                SourceSystemCode
                    no label
                    center
                    align as label
                    display when blank
            column4
                header4 of "DefaultStep"
                    center
                DefaultStep
                    no label
                    center
                    align as label
                    display when blank
            column5
                header4 of "AllocationGroup"
                    center
                AllocationGroup
                    no label
                    center
                    align as label
            column6
                visible when (AllocationControl.Type.Actuals)
                    header4 of "AllowMultiplePostings"
                        center
                    AllowMultiplePostings
                        no label
                        center
                        align as label
                        display when blank
