PeriodEndAssetAmountsGroupForm is a Form
    title is "AssetAmounts"
    Layout
        single column
            PriorPeriodLedgerAmountForAsset
            DerivedGroupAssetAdditions
            DerivedGroupAssetAdjustments
            DerivedGroupAssetTransfers
            DerivedGroupAssetDisposals
        blank line
        paragraph
            CalculatedAssetEndingBalance
            visible when (not Status.Closed)
                button of "UpdateAssetAmounts"
                    action is UpdateAssetAmounts
            visible when (CanUpdateReconciliationDetails)
                button of "UpdateReconciliationDetails"
                    action is UpdateReconciliationDetails
        visible when (LevelType.Account)
            paragraph
                LedgerAmount
                    label is "LedgerAmount"
        visible when (IsConsolidatedGroup)
            paragraph
                GroupLedgerAmount
                    label is "LedgerAmount"
        blank line
        single column
            AssetOutOfBalanceAmount
