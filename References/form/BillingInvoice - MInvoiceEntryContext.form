MInvoiceEntryContext is a Form
    title is "InvoiceEntryContext"
    Layout
        two column distributed
            Company
                display as text
            Company.Name
                label is "CompanyName"
                display as text
        two column distributed
            BatchNumber
                label is "Batch"
            BatchNumber.Description
                no label
                display as text
        visible when (not Company.ManualInvoiceNumbering)
            two column distributed
                visible when (ParallelReferenceEnabled)
                    DerivedBillingInvoiceForParallelReference
                        display as text
                visible when (not ParallelReferenceEnabled)
                    BillingInvoice
                        label is "Invoice"
                        display as text
        visible when (Company.ManualInvoiceNumbering)
            two column distributed
                GlobalInvoiceNumber
                    label is "Invoice"
        two column distributed
            Status
                display as text
            button of "ViewInvoice"
                visible when (HasIDMDocument)
                link is external "<DerivedIDMInvoiceLink>"
                display as link
