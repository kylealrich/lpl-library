CalculateCategorySpend is an ActionForm
    action is CalculateCategorySpend
    Layout
        single column
            RepresentativeText
                label is "CategoryCode"
                display as text
        paragraph
            text of "DocumentDateRange"
            DateRange
            text of "IfNoEndDateEntered,EndDateWillDefaultToCurrentDate"
        single column
            CalculateInvoiceSpend
            CalculatePOSpend
            visible when (TopLevelCategory)
                CalculateForChildCategories
                    display as text
            visible when (not TopLevelCategory)
                CalculateForChildCategories
