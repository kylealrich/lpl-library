TansactionApplicationExpanded is a Form
    title is "TransactionExpanded"
    Layout
        display as text
            paragraph
                Company
                Customer
                Customer.Name
                    no label
                ReceivableProcessLevel.RepresentativeText
                GeneralLedgerDate
            paragraph
                ReceivableInvoiceDetail.Invoice
                Description
                    no label
                Status
                    no label
                TransactionDate
                DueDate
            paragraph
                DerivedSignedTransactionAmountSummarized
                OriginalCurrency
                    no label
                DerivedSignedOpenAmountSummarized
                    label is "OpenAmount"
                AmountToAdjustReason
                    label is "Reason"
                AmountToAdjust
                visible when (IsAppliedOrAdjusted)
                    DerivedAppliedAmount
                        label is "AppliedAmount"
                    DerivedAdjustAmount
                        label is "AdjustedAmount"
