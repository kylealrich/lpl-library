SnapshotDetailForm is a Form
    Layout
        two column
            column1
                Status
                    label is "Status"
                ConfigSnapshotItemInfo.ConfigEntityType
                    label is "Type"
                visible when (ConfigSnapshotItemInfo.BusinessView entered)
                    ConfigSnapshotItemInfo.BusinessView
                visible when (ConfigSnapshotItemInfo.Name entered)
                    ConfigSnapshotItemInfo.Name
                visible when (ConfigSnapshotItemInfo.Actor entered)
                    ConfigSnapshotItemInfo.Actor
                visible when (IsReportOrFolder)
                    ReportOrFolderMsg
                Independent
                DerTags
            column2
                visible when (StatusChanged)
                    StatusChanged
                        display as tag
                            color of red when (StatusChanged)
                visible when (DeletedRecord)
                    DeletedRecord
                        display as tag
                            color of red when (DeletedRecord)
                visible when (LPLChanged)
                    LPLChanged
                        display as tag
                            color of red when (LPLChanged)
                paragraph
                    ConfigValidationStatus.Status
                        no label
                        display as tag
                            color of red when (ConfigValidationStatus.Status.Failed)
                            color of green when (ConfigValidationStatus.Status.Passed)
                            color of orange when (ConfigValidationStatus.Status.NotValidated)
                    ConfigValidationStatus.LastValidationTime
                        no label
