ItemDashboardSummary is a Form
    Layout
        display as text
            three column distributed
                column1
                    ItemAndDescriptionDisplay
                        label is "Item"
                        header2
                column2
                    text of "_"
                column3
                    paragraph
                        NotAvailableDisplay
                            no label
                            display as tag
                                color of gray when (Discontinued)
                                color of green when (Active)
                                color of red when (not Active)
                                color of red when (NotAvailableForUse)
                        visible when (HasContract)
                            OnContractDisplay
                                no label
                                display as tag
                                    color of blue when (HasContract)
                        visible when (RecallNoticesExist)
                            RecallNoticesDisplay
                                no label
                                display as tag
                                    color of red when (RecallNoticesExist)
                        visible when (IsTrackedInAlternateUOM)
                            TrackedInAlternateUOMDisplay
                                no label
                                display as tag
                                    color of blue when (IsTrackedInAlternateUOM)
            three column distributed
                Description2
                    label is "FullDescription"
                paragraph
                    button of "<StockUOM>"
                        link is UnitsOfMeasureNav
                        label is "StockUOM"
                        display as link
                    visible when (IsCatchWeightItem)
                        button of "<SecondaryUOM>"
                            link is UnitsOfMeasureNav
                            label is "SecondaryUOM"
                            display as link
                ItemGroup
            three column distributed
                Reference1
                Reference2
                IssueAccount.GeneralLedgerChartAccount
                    label is "IssueAccount"
            three column distributed
                column1
                    paragraph
                        Manufacturer.ManufacturerCode
                        Manufacturer.ManufacturerDivision
                            label is "Division"
                        ManufacturerNumber
                            label is "Number"
                column2
                    paragraph
                        Description3
                column3
                    MajorInventoryClass
                    paragraph
                        visible when (PatientChargeableEntered)
                            PatientChargeable
                            ChargeNumber
