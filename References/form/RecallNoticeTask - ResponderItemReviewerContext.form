ResponderItemReviewerContext is a Form
    Layout
        paragraph
            RecallNotice
                display as text
            RecallNotice.Name
                no label
                display as text
            Priority
                display as text
            FormattedDueDate
                label is "DueDate"
                display as text
            ProposedItem
                label is "Status"
                display as text
            visible when (PendingTrial)
                text of "ApprovalActionsWillBeAvailableAfterTrialIsComplete"
                    bold
        single column
            RecallNotice.Description
                display as text
            visible when (RecallNotice.ItemAttachmentEntered)
                RecallNotice.ProposedItemAttachment.File
                    label is "ListOfProposedItems"
        paragraph
            visible when (HasAttachmentToDisplay)
                visible when (false)
                    first DisplayAttachmentOnTaskRel.Attachment.MimeType
                button of "<first DisplayAttachmentOnTaskRel.Attachment.Title>"
                    view first DisplayAttachmentOnTaskRel.Attachment.File
                    display as link
        visible when (RecallTaskInstruction entered)
            paragraph
                RecallTaskInstruction
                    label is "InstructionTitle"
                    display as text
                TaskInstructionDescription
                    label is "Instructions"
                    display as text
                    use text area of 3 lines
