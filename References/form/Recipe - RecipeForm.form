RecipeForm is a CompositeForm
    is primary
    title is "Recipe"
    context form is RecipeContext
        background is theme color
    Actions
        action is GenerateRecipe
            action icon is pdf
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Ingredients is a Panel
        list is RecipeLine set.primary
    Instructions is a Panel
        list is RecipeInstruction set.primary
