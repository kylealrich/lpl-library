ProjectContractContextForm is a Form
    title is "<FinanceEnterpriseGroup.ProjectLabel>Contract"
    Layout
        two column distributed
            column1
                paragraph
                    DisplayContract
                        label is "<FinanceEnterpriseGroup.ProjectLabel>Contract"
                        display as text
                    Description
                        display as text
                    Currency
                        display as text
            column2
                paragraph
                    ProjectContract.Project.ProjectDateRange.BeginDate
                        label is "BeginDate"
                        display as text
                    ProjectContract.Project.ProjectDateRange.EndDate
                        label is "EndDate"
                        display as text
                    StatusMessage
                        no label
                        display as tag
                            color of yellow when (not Active)
                            color of green when (Active)
        two column distributed
            column1
                paragraph
                    visible when (ErrorMessage entered)
                        text of "***ERROR***<ErrorMessage>"
                    visible when (InvoicingMessage entered)
                        text of "<InvoicingMessage>"
                    visible when (InvoicingInProgress)
                        text of "InvoicingInProgress"
                    visible when (RevenueInProgress)
                        text of "RevenueRecognitionInProgress"
