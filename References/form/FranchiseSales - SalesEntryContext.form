SalesEntryContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        Company
                    visible when (RecordExists)
                        Company.BillingCompany.RepresentativeText
                            display as text
                paragraph
                    visible when (not RecordExists)
                        Customer
                            select is CustomerContextCompanySelectList
                    visible when (RecordExists)
                        FranchiseContract.DerivedCustomer
                            display as text
                paragraph
                    visible when (not RecordExists)
                        CustomerShipTo
                            label is "ShipTo"
                    visible when (RecordExists)
                        FranchiseContract.DerivedShipTo
                            display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        FranchiseContract
                            label is "Contract"
                paragraph
                    visible when (RecordExists)
                        FranchiseContract
                            label is "Contract"
                            display as text
                        FranchiseContract.Currency
                            label is "Currency"
                            display as text
                paragraph
                    visible when (not RecordExists)
                        FranchiseSales.Date
                            label is "SalesDate"
                    visible when (RecordExists)
                        FranchiseSales.Date
                            label is "SalesDate"
                            display as text
                paragraph
                    visible when (not RecordExists)
                        FranchiseSales.SalesType
                            label is "SalesType"
                    visible when (RecordExists)
                        FranchiseSales.SalesType
                            label is "SalesType"
                            display as text
            column3
                visible when (not IsSalesOnly)
                    paragraph
                        TotalCharges
                            display as text
                        TotalDue
                            label is "SubmittedTotal"
                            display as text
                paragraph
                    visible when (not IsSalesOnly)
                        visible when (IsInterfaced)
                            DerivedInvoice
                                label is "Invoice"
                                display as text
                    visible when (not RecordExists)
                        FranchiseSales.AdjustmentNumber
                            label is "Adjustment"
                    visible when (RecordExists)
                        FranchiseSales.AdjustmentNumber
                            label is "Adjustment"
                            display as text
                paragraph
                    visible when (RecordExists)
                        DerivedStatus
                            display as tag
                                color of gray when (Status.Unreleased)
                                color of green when (Status.Released)
                                color of green when (Status.Invoiced)
                                color of orange when (Status.Closed)
