ItemProposalGeneral is a Form
    Layout
        single column
            Description
                use text area of 5 lines
        three column distributed
            paragraph
                RecallCoordinator
                    label is "Coordinator"
                    select is RecallCoordinatorList
                    display as required when (true)
                RecallCoordinator.Employee.FirstLastName
                    no label
                    display as text
            visible when (ReportedByRecallUserEntered)
                ReportedByRecallUser.FirstLastName
                    label is "ReportedBy"
                    display as text
            visible when (ReportedBySupplierEntered)
                ReportedBySupplier.SupplierSourceId.MainContact.FirstAndLastName
                    label is "ReportedBy"
                    display as text
                button of "<ReportedBySupplier.SupplierSourceId.EmailAddress>"
                    link is "mailto:<ReportedBySupplier.SupplierSourceId.EmailAddress>"
                    display as link
        three column distributed
            create date
                label is "CreationDate"
                display as text
            paragraph
                RecallType
                    label is "NewItemProposalType"
                    select is RecallTypesForItemProposal
                    display as required when (true)
                RecallType.Description
                    no label
                    display as text
            EntryMechanism
                label is "EnteredFrom"
                display as text
        single column
            ManufacturerCodeDivision
                label is "ManufacturerCode"
                compact format
        three column distributed
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            paragraph
                Supplier
                Supplier.SupplierName
                    no label
                    display as text
            visible when (ProposedContractEntered)
                paragraph
                    text of "ProposedContract:"
                    button of "<ProposedContract>"
                        link is ContractInformation
                        display as link
                    ProposedContract.ProposedContract
                        label is "ProposalStatus"
                        display as text
