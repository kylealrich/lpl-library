Amounts is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Currency
                    Currency.Description
                        no label
                        display as text
                paragraph
                    BaseCurrencyRate
                        label is "ExchangeRate"
                        show up to 10 characters
                paragraph
                    TaxCreditAmount.TransactionAmount
                        label is "InvestmentTaxCredit"
                    visible when (IsSameCurrencyAndTaxCreditEntered)
                        TaxCreditAmount.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        TaxCreditAmount.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    SecurityDeposit.TransactionAmount
                        label is "SecurityDeposit"
                    visible when (IsSameCurrencyAndSecurityDepositEntered)
                        SecurityDeposit.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        SecurityDeposit.BaseAmount.ToCurrency
                            no label
                            display as text
            column2
                paragraph
                    DownPayment.TransactionAmount
                        label is "DownPayment"
                    visible when (IsSameCurrencyAndDownPaymentEntered)
                        DownPayment.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        DownPayment.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    visible when (IsUnreleased)
                        button of "AddIncentives"
                            list is LeaseIncentiveRel.LeaseIncentivesList
                    visible when (not IsUnreleased)
                        button of "ViewIncentives"
                            list is LeaseIncentiveRel.LeaseIncentivesListViewOnly
                visible when (LeaseAccountingStatement.96)
                    last LeaseInitialDirectCostRel.InitialDirectCostTotal
                        label is "TotalInitialDirectCosts"
                    visible when (IsUnreleased)
                        button of "AddInitialDirectCosts"
                            list is LeaseInitialDirectCostRel.LeaseInitialDirectCostList
                    visible when (not IsUnreleased)
                        button of "ViewInitialDirectCosts"
                            list is LeaseInitialDirectCostRel.LeaseInitialDirectCostViewOnly
                visible when (not LeaseAccountingStatement.96)
                    paragraph
                        InitialDirectCost.TransactionAmount
                            label is "InitialDirectCost"
                        visible when (IsSameCurrencyAndInitialDirectCostEntered)
                            InitialDirectCost.BaseAmount.EnteredCurrencyAmount
                                no label
                                display as text
                            InitialDirectCost.BaseAmount.ToCurrency
                                no label
                                display as text
                    paragraph
                        InitialDirectCostVendor
            column3
                paragraph
                    BargainPurchaseAmount.TransactionAmount
                        label is "BargainPurchase"
                    visible when (IsSameCurrencyAndBargainPurchaseEntered)
                        BargainPurchaseAmount.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        BargainPurchaseAmount.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    UnguaranteedAmount.TransactionAmount
                        label is "ResidualUnguaranteed"
                    visible when (IsSameCurrencyAndUnguaranteedAmountEntered)
                        UnguaranteedAmount.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        UnguaranteedAmount.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    GuaranteedAmount.TransactionAmount
                        label is "ResidualGuaranteed"
                    visible when (IsSameCurrencyAndGuaranteedAmountEntered)
                        GuaranteedAmount.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        GuaranteedAmount.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    FairMarketValue.TransactionAmount
                        label is "FairMarketValueAtInception"
                    visible when (IsSameCurrencyAndFairMarketyValueEntered)
                        FairMarketValue.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        FairMarketValue.BaseAmount.ToCurrency
                            no label
                            display as text
