ContractLineTierCostForm is a Form
    is primary
    title is "ContractLineTierCost"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        Contract.RepresentativeText
                            label is "Contract"
                        ContractLine
                            label is "Line"
                    paragraph
                        ContractLine.ItemNumber
                            label is "Item"
                        ContractLine.ItemDescription
                            label is "Description"
                        ContractLine.UOM.UnitOfMeasure
                            label is "UOM"
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                    visible when (ContractLine.VendorItem entered)
                        ContractLine.VendorItem
                column3
                    Contract.WorkingContractID
            header2 of "_"
            paragraph
                ContractTier
                    label is "Tier"
                ContractTier.TierTitle
                    no label
        single column
            visible when (ContractLine.CannotUpdateGPO)
                TierCost
                    display as text
            visible when (not ContractLine.CannotUpdateGPO)
                TierCost
