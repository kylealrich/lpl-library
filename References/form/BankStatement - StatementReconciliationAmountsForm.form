StatementReconciliationAmountsForm is a Form
    title is "ReconciliationAmounts"
    Layout
        single column
            text of "Balances_in<StatementCurrency>"
                header3
                bold
        four column distributed
            column1
                BeginningBalance
                    label is "Beginning"
            column2
                ReconciledAmount
                    label is "NetReconciledAmount"
            column3
                UnreconciledAmount
                    label is "NetUnreconciledAmount"
            column4
                CalculatedBankBalance
                    label is "CalculatedBank"
        four column distributed
            column1
                EndingBalance
                    label is "Ending"
            column2
                CalculatedBankBalance
                    label is "CalculatedBank"
            column3
                OutOfBalanceAmount
                    label is "OutOfBalance"
        two column
            column1
                header2 of "NetReconciled_\\Amount"
                paragraph
                    ReconciledDeposits
                        label is "Deposits"
                    ReconciledPayments
                        label is "Payments"
                    ReconciledAmount
                        label is "Net"
            column2
                header2 of "NetUnreconciled_\\Amount"
                paragraph
                    UnreconciledDeposits
                        label is "Deposits"
                    UnreconciledPayments
                        label is "Payments"
                    UnreconciledAmount
                        label is "Net"
