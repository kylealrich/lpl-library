MaintainResource is a CompositeForm
    title is "<PreferredSimplePresentationName>"
    show panel control on left
    restrict action Create
    restrict action Update
    restrict action SendMessage
    restrict action Reminder
    restrict action WorkRequest
    restrict action Reload
    Actions
        action is InactivateAndReassign
            hide when invalid
            valid when (AllowInactivateAndReassign)
        action is save
    AtAGlance is a Panel
        form is MaintainEmployeeAtAGlanceForm
    Calendar is a Panel
        visible when (ShowMyReminders)
        list is MyRemindersRel.CalendarList
    YourWork is a Panel
        visible when (ShowMyReminders)
        list is MyRemindersRel.FinanceResourceScheduleList
    Messages is a Panel
        visible when (ShowMyMessages)
        list is MyMessagesRel.MaintainMessagesList
    Membership is a Panel
        visible when (ShowMyTeams)
        list is TeamsRel.MaintainTeamMemberList
    Employee is a Panel
        form is MaintainEmployeeForm
    Contact is a Panel
        form is MaintainContactForm
    Preferences is a Panel
        visible when (Active)
        form is MaintainPreferencesForm
