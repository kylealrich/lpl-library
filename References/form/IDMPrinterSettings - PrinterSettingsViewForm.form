PrinterSettingsViewForm is a Form
    title is "IDMPrinter_\\-_<IDMPrinter>"
    disable all actions
    Layout
        display as text
            two column distributed
                column1
                    IDMPrinterSettings
                        label is "SettingsName"
                        display as text
                        raise yellow alert when (not IsActivePrinter)
                            mouse over text is "PrinterIsInactive"
                column2
                    Description
            header3 of "PrinterSettings"
            two column distributed
                column1
                    PrinterOptions.Color
                        display as horizontal radio buttons
                    PrinterOptions.Scaling
                    Side
                    Copies
                column2
                    PrinterTray
                    PrinterOptions.Orientation
                    PaperSize
                paragraph
                    CustomMediaSize.Width
                    CustomMediaSize.Height
