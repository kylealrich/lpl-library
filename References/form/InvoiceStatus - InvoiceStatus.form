InvoiceStatus is an ActionForm
    action is InvoiceStatus
    Layout
        single column
            Company
                select is Companies
        two column
            ProcessLevel
                select is ProcessLevels
            ProcessLevel.Name
                no label
        single column
            BatchNbr
                label is "Batch"
                select is InvoiceBatches
        blank line
        two column
            FrInvoiceDate
                label is "FromDate"
            ToInvoiceDate
                label is "ToDate"
        single column
            text of "_or"
        four column
            FromAddSubtract
                label is "FromDateAdjustment"
            FromDays
                label is "Days"
            ToAddSubtract
                label is "ToDateAdjustment"
            ToDays
                label is "Days"
        blank line
        single column
            ReportOption
                label is "DetailOption"
        single column
            SelectOption
                label is "SelectionOption"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InvoiceStatusReport_RDG
            column2 of 25%
                InvoiceStatusReport_XPT
