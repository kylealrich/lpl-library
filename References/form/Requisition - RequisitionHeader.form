RequisitionHeader is a Form
    restrict action Unreleased.UpdateRequisitionLineFillOrKill
    Layout
        two column
            column1 of 50%
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
                paragraph
                    Requester
                        display as text
                    Requester.Employee.PresentationNameSnapshot
                        no label
                        display as text
                paragraph
                    RequestingLocation
                        display as text
                        select is ActiveRequestingLocations
                    RequestingLocation.Name
                        no label
                        display as text
                    RequestingLocation.InventoryTransactionType
                        display as text
            column2 of 50%
                paragraph
                    Requisition
                        label is "RequisitionNumber"
                        display as text
                    DerivedStatusMessage
                        label is "Status"
                        display as text
                paragraph
                    ApprovalValue
                        label is "Total"
                        display as text
                    BaseCurrencyCode
                        no label
                        display as text
                paragraph
                    visible when (BudgetEditInProgress)
                        text of "BudgetEditsInProgress"
                            bold
                            color of red
                    visible when (BudgetEditFailure)
                        text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                            bold
                            color of red
