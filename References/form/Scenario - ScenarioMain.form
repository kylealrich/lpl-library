ScenarioMain is a Form
    Layout
        four column distributed
            column1
                visible when (not NotBudget)
                    Description
                visible when (NotBudget)
                    Description
                        display as text
                Basis
            column2
                CommitmentType
                    display as text
            column3
                visible when (CommitmentType.Budget)
                    Status
                        display as tag
                            color of gray when (IsNotActiveStatus)
                            color of yellow when (Status.Preparing)
                            color of green when (Status.Ready)
                visible when (Exporting)
                    ExportingMessage
                        no label
                        display as tag
                            color of orange when (Exporting)
                visible when (IsLoading)
                    UploadInProgressMessage
                        no label
                        display as tag
                            color of orange
            column4
                visible when (IsReady)
                    visible when (not IncrementalLoadStatus.Available)
                        visible when (Locked)
                            paragraph
                                button of icon.locked
                                    action is Unlock
                                    label is "ClickToUnlock"
                                LockedText
                                    no label
                                    display as tag
                                        color of red
