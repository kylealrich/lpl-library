SubleaseForm is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is SubleaseContextForm
        background is theme color
    Actions
        action is Unreleased.Release
            mouse over text is "Release"
            hide when invalid
        action is Released.Unrelease
            mouse over text is "Unrelease"
            hide when invalid
        action is Released.CreateInvoices
            mouse over text is "CreateInvoices"
            hide when invalid
        action is Released.ProcessPeriod
            mouse over text is "ProcessPeriod"
            hide when invalid
        action is Released.Close
            mouse over text is "Close"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Unreleased.Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Amounts is a Panel
        form is Amounts
    Billing is a Panel
        form is Billing
    BillingSchedule is a Panel
        list is SubleaseBillingScheduleDetailByInvoiceDateRel.SubleaseBillingScheduleDetailList
    Invoices is a Panel
        visible when (HasInvoices)
        list is SubleaseBillingInvoiceRel.SubleaseBillingInvoices
    Amortization is a Panel
        visible when (not Status.Unreleased)
        list is CustomerBillingScheduleDetailsRel.AmortizationScheduleList
    NonLeaseComponent is a Panel
        list is SubleaseExecutoryCostCodeRel.SubleaseExecutoryCostCodeInlineList
    Transactions is a Panel
        visible when (HasSubleaseTransactions)
        list is SubleaseTransactionByDateRel.SubleaseTransactionList
    Attachments is a DashBoardPanel
        use 12 column grid
        Comments is a Panel
            span 6 columns
            list is SubleaseComment set.SubleaseCommentCard
        RelatedDocuments is a Panel
            span 6 columns
            list is SubleaseAttachment set.SubleaseAttachmentCard
