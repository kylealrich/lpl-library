RemittanceOptions is a Form
    Layout
        visible when (not PaymentFormat.IDMOutputFile)
            single column
                UseIDMTemplate
            visible when (not UseIDMTemplate)
                single column
                    RemittanceOption
                    NumberOfRemittanceLines
                    NumberOfOverflowRemittanceLines
                    LanguageTextOption
            visible when (UseIDMTemplate)
                two column distributed
                    column1
                        paragraph
                            RemittanceOption
                                display only
                            ExcludeDistributionOnRemittance
                    column2
                        paragraph
                            BatchPrintCount
                            text of "DocumentsWillBePrintedInBatchesOf<BatchPrintCount>"
                header2 of "TemplateOptions"
                two column distributed
                    column1
                        paragraph
                            SupplementaryTemplate
                                select is PayablesPaymentOutputTemplate
                            button of "<SupplementaryTemplate.Name>"
                                link is external "<SupplementaryTemplate.RetrieveUrl>"
                                display as link
                    column2
                        SupplementaryFilename
                header2 of "PrintOptions"
                two column
                    column1
                        UseSupplementaryPrinter
                    column2
                        paragraph
                            SupplementaryPrinter
                                when value changed
                                    SupplementaryPrinterSetting =  blank
                            SupplementaryPrinter.Description
                                no label
                                display as text
                        visible when (SupplementaryPrinter.Type.IEP)
                            paragraph
                                SupplementaryPrinterSetting
                header2 of "EmailOptions"
                two column distributed
                    column1
                        paragraph
                            UseSupplementaryEmail
                            SupplementaryEmailTemplate
                                select is PayablesPaymentOutputIDMEmailTemplate
                            button of "<SupplementaryEmailTemplate.Name>"
                                link is external "<SupplementaryEmailTemplate.RetrieveUrl>"
                                display as link
                        ExcludeFromEmailCc
                        ConsolidatedRemittanceAdvice
                            label is "ConsolidateRemittanceAdvice_byVendor"
                    column2
                        SupplementaryFromEmail
                        paragraph
                            SupplementaryEmailSubject
                            text of "Sample:<DerivedEmailSubject>"
                            SupplementaryOutputFileName
                            visible when (SupplementaryOutputFileName entered)
                                text of "Sample:<DerivedSupplementaryOutputFileName>"
        visible when (PaymentFormat.IDMOutputFile)
            paragraph
                RemittanceOption
                ExcludeDistributionOnRemittance
            visible when (RemittanceOption.OverflowDocument)
                single column
                    NumberOfRemittanceLines
            visible when (not RemittanceOption.AlwaysAttached)
                header2 of "TemplateOptions"
                two column distributed
                    column1
                        paragraph
                            SupplementaryTemplate
                                select is PayablesPaymentOutputTemplate
                            button of "<SupplementaryTemplate.Name>"
                                link is external "<SupplementaryTemplate.RetrieveUrl>"
                                display as link
                    column2
                        SupplementaryFilename
                header2 of "PrintOptions"
                two column
                    column1
                        UseSupplementaryPrinter
                    column2
                        paragraph
                            SupplementaryPrinter
                                display as required when (SequentialPrintCheckAndRemittance)
                                when value changed
                                    SupplementaryPrinterSetting =  blank
                            SupplementaryPrinter.Description
                                no label
                                display as text
                        visible when (SupplementaryPrinter.Type.IEP)
                            paragraph
                                SupplementaryPrinterSetting
                                    display as required when (SequentialPrintCheckAndRemittance)
                header2 of "EmailOptions"
                two column distributed
                    column1
                        paragraph
                            UseSupplementaryEmail
                            SupplementaryEmailTemplate
                                select is PayablesPaymentOutputIDMEmailTemplate
                            button of "<SupplementaryEmailTemplate.Name>"
                                link is external "<SupplementaryEmailTemplate.RetrieveUrl>"
                                display as link
                        ExcludeFromEmailCc
                        ConsolidatedRemittanceAdvice
                            label is "ConsolidateRemittanceAdvice_byVendor"
                    column2
                        SupplementaryFromEmail
                        paragraph
                            SupplementaryEmailSubject
                            text of "Sample:<DerivedEmailSubject>"
