CreateFromBlanketContractSummaryForm is a Form
    title is "ViewCreatedPurchaseOrder"
    Layout
        display as text
            paragraph
                Company
                Company.Name
            single column
                PurchaseOrder
            paragraph
                Vendor
                Vendor.VendorName
            single column
                CalculateTotalAmount
                    label is "POTotalAmount"
        single column
            text of "ClickTheButtonBelowToReleaseThePurchaseOrder"
            button of "Release"
                valid when (PurchaseOrderInOpenStatus)
                action is Unreleased.Release
        single column
            text of "ClickTheLinkBelowToViewThePurchaseOrder"
            button of "PurchaseOrder"
                link is ViewPO
                display as link
