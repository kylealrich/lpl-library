Main is a Form
    Layout
        three column distributed
            column1
                paragraph
                    CustomerShipTo
                    CustomerShipTo.Name
                        no label
                        display as text
                paragraph
                    Miscellaneous
                        label is "AddOnCharge"
                        compact format
                Amount
                CycleCode
            column2
                BilledAmount
                Price
                Frequency
                ActionCode
            column3
                StartDate
                StopDate
                TaxExemptCode
                paragraph
                    ZeroAfterUse
                    Skip
        three column distributed
            visible when (ActionCode.SpreadAmount)
                TotalAmount
                RecurringInvoiceParameter.NumberOfInvoices
                    label is "NumberOfInvoices"
                    display as text
                Amount
                    label is "AmountPerPeriod"
                    display as text
