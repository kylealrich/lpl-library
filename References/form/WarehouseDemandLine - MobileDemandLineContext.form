MobileDemandLineContext is a Form
    title is "DemandLineContext"
    Layout
        two column distributed
            Company
                display as text
            InventoryLocation
                label is "Location"
                display as text
            visible when (IsInventoriedOrNonStock)
                Item
                    display as text
            WarehouseDemand.DemandSystemCode
                display as text
            Company.Name
                label is "CompanyName"
                display as text
            InventoryLocation.Name
                label is "LocationName"
                display as text
            visible when (IsInventoriedOrNonStock)
                Item.Description
                    label is "Description"
                    display as text
            WarehouseDemand.DemandDocument
                label is "Document"
                display as text
        paragraph
            WarehouseDemandLine.DemandDocumentType
                display as text
            WarehouseDemandLine.LineNumber
                label is "LineNumber"
                display as text
            WarehouseDemandLine.ComponentSequence
                label is "ComponentSequence"
                display as text
        paragraph
            AllocatedQuantity
                display as text
            DetailQuantity
                label is "AssignedQuantity"
                display as text
            DerivedUOM
                label is "UOM"
                display as text
