ReceivableUserFieldDefinition is a Form
    is primary
    title is "ReceivableUserFieldDefinition"
    Layout
        three column
            column1
                ReceivableUserFieldDefinition.Company
                    label is "ReceivableCompany"
                    select is Companies
                visible when (IsUserTypeCustomer)
                    DataType01
                        label is "ARCustomerUserField1"
                    DataType02
                        label is "ARCustomerUserField2"
                    DataType03
                        label is "ARCustomerUserField3"
                    DataType04
                        label is "ARCustomerUserField4"
                    DataType05
                        label is "ARCustomerUserField5"
                visible when (IsUserTypeTransactionHeader)
                    DataType01
                        label is "TransactionHeaderUserField1"
                    DataType02
                        label is "TransactionHeaderUserField2"
                    DataType03
                        label is "TransactionHeaderUserField3"
                    DataType04
                        label is "TransactionHeaderUserField4"
                    DataType05
                        label is "TransactionHeaderUserField5"
                visible when (IsUserTypePayment)
                    DataType01
                        label is "PaymentUserField1"
                    DataType02
                        label is "PaymentUserField2"
                    DataType03
                        label is "PaymentUserField3"
                    DataType04
                        label is "PaymentUserField4"
                    DataType05
                        label is "PaymentUserField5"
                visible when (IsUserTypePaymentBatch)
                    DataType01
                        label is "PaymentHeaderUserField1"
                    DataType02
                        label is "PaymentHeaderUserField2"
                    DataType03
                        label is "PaymentHeaderUserField3"
                    DataType04
                        label is "PaymentHeaderUserField4"
                    DataType05
                        label is "PaymentHeaderUserField5"
            column2
                ReceivableUserFieldDefinition.Company.Name
                    no label
                    display as text
            column3
                ReceivableUserFieldDefinition.UserFieldType
                    label is "UserType"
