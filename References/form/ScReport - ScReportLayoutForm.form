ScReportLayoutForm is an ActionForm
    action is RunCommand
    title is "SecurityClassReport_toFTP"
    Layout
        WorkDirectory
        header3 of "OutputFile"
        FileName
            label is "ZipFileName"
        header3 of "Filters"
        single column
            FilterBy
                display as horizontal radio buttons
            visible when (FilterBy.User)
                SpecifyUser
                    label is "RunForSingleActor"
                visible when (SpecifyUser)
                    Actor
            visible when (FilterBy.Role)
                SpecifyRole
                    label is "RunForSingleRole"
                visible when (SpecifyRole)
                    Role
            visible when (FilterBy.SecurityClass)
                SpecifySecurityClass
                    label is "RunForSingleSecurityClass"
                visible when (SpecifySecurityClass)
                    SecurityClass
            SpecifySecurableObjectType
                label is "RunForSingleSecurableObjectType"
            visible when (SpecifySecurableObjectType)
                SecurableObjectType
            SpecifySecurableObjectName
                label is "RunForSingleSecurableObjectName"
            visible when (SpecifySecurableObjectName)
                SecurableObjectName
