UserCardView is a Form
    is primary
    Layout
        paragraph
            BusinessView
                label is "<BusinessViewLabel>"
            BusinessCardView
                label is "CardView"
            TBusinessCardView
                label is "OriginatedFrom"
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserCardView
                label is "UserCardViewId"
            Description
        three column
            Actor
            UserFolder
                label is "UserFolder"
            UserFolder.Name
                no label
        single column
            LPL
                use text area of 20 lines
            visible when (Independent)
                LPLIndex
                    display only
                    use text area of 12 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
