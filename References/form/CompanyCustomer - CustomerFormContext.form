CustomerFormContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (CompanyCustomer not entered)
                        Company
                    visible when (CompanyCustomer entered)
                        Company.RepresentativeText
                            label is "Company"
                            display as text
                paragraph
                    visible when (CompanyCustomer not entered)
                        Customer
                    visible when (CompanyCustomer entered)
                        Customer.RepresentativeText
                            label is "Customer"
                            display as text
                paragraph
                    StartDate
            column2
                paragraph
                    SalesRepresentative
                        select is SalesReps
                    SalesRepresentative.Name
                        no label
                        display as text
                paragraph
                    ReceivableDefaultCode
                        label is "DefaultCode"
                        select is DefaultCodes
                    ReceivableDefaultCode.Description
                        no label
                        display as text
                paragraph
                    CreditAnalyst
                        select is CreditAnalyst
                    CreditAnalyst.Name
                        no label
                        display as text
            column3
                paragraph
                    ActiveStatus
