RecallGroupEmailConfiguration is a Form
    title is "EmailConfiguration"
    Layout
        header2 of "RecallNoticeEmailSettings"
        single column
            SendTaskEmail
                label is "SendEmailsToTaskOwners"
            SendRecallNoticeCloseEmail
                label is "SendNoticeClosureEmailsToNotificationUsersAndAssignedTaskOwners"
            SendRecallNoticeEmail
                label is "SendNoticeEmailsToNotificationUsers"
        header3 of "SendEmail_toCoordinator_when:"
        paragraph
            SendEachAcceptedTaskEmail
                label is "EachTaskIsAccepted"
            text of "_____or_____"
                bold
            SendAllAcceptedTaskEmail
                label is "AllTasksAreAccepted"
        paragraph
            SendEachCompletedTaskEmail
                label is "EachTaskIsCompleted"
            text of "_or_____"
                bold
            SendAllCompletedTaskEmail
                label is "AllTasksAreCompleted"
        header2 of "Emails_toDocumentOwnersUponRelease_ofNotice"
        paragraph
            SendRequesterNoticeEmail
                label is "Requesters"
            SendPOBuyerNoticeEmail
                label is "Buyers(ForUnreceivedPurchaseOrders)"
            SendEventBuyerNoticeEmail
                label is "Buyers(ForOpenEvents)"
            SendContractNoticeEmail
                label is "PrimaryContactsOnContracts"
        header2 of "TaskEmails_toTaskOwners"
        single column
            TaskEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            TaskEmailContent
                label is "EmailContent"
        header2 of "ReassignTaskEmails_toOwnerWhoAlreadyHas_aTask"
        single column
            MergeTaskEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            MergeTaskEmailContent
                label is "EmailContent"
        header2 of "TaskRemindersToTaskOwners"
        single column
            TaskReminderEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            TaskReminderEmailContent
                label is "EmailContent"
        header2 of "TaskEscalations_toRecallCoordinators_andSupervisors"
        single column
            TaskEscalationsEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            TaskEscalationsEmailContent
                label is "EmailContent"
        header2 of "NewItemProposalEmailsToItemReviewers"
        single column
            ItemProposalEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            ItemProposalEmailContent
                label is "EmailContent"
        header2 of "NoticeClosureEmails_toNotificationUsers_andAssignedTaskOwners"
        single column
            RecallNoticeCloseEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            RecallNoticeCloseEmailContent
                label is "EmailContent"
        header2 of "RecallNoticeEmails_toNotificationUsers"
        single column
            RecallNoticeEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            RecallNoticeEmailContent
                label is "EmailContent"
        header2 of "Notice_toNotificationUsers_if_they_are_removed_fromActiveRecallNotice"
        single column
            RecallNoticeUnsubscribeEmailSubject
                label is "EmailSubject"
                show up to 100 characters
            RecallNoticeUnsubscribeEmailContent
                label is "EmailContent"
