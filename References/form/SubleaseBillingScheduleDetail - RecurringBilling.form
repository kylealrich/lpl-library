RecurringBilling is an ActionForm
    action is RecurringBilling
    title is "RecurringBilling"
    Layout
        display as text
            paragraph
                Sublease.Company
                    display as text
                Sublease.Company.Name
                    no label
                    display as text
            paragraph
                Sublease
                    display as text
            paragraph
                Sublease.BeginDate
                Sublease.EndDate
        paragraph
            PaymentDateRange.BeginDate
                label is "PaymentDateRange"
            text of "-"
            PaymentDateRange.EndDate
                no label
        single column
            ActionType
                display as horizontal radio buttons
            visible when (ActionType.AddPayments)
                paragraph
                    FirstInvoiceDate
                    Frequency
            visible when (ActionType entered)
                visible when (not ActionType.DeletePayments)
                    PaymentAmount
