DisposalDetail is a Form
    title is "ItemDetail"
    restrict action TransferItem
    restrict action DisposeItem
    restrict action Update
    Layout
        paragraph
            Asset
            Asset.Description
        paragraph
            ItemNumber
                label is "Item"
                display as text
            Description
                display as text
        paragraph
            PurchaseDate
        three column independent
            column1
                ItemQuantity
            column2
                TransactionItemCost
                    label is "Cost"
            column3
                TransactionItemTax
                    label is "Tax"
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.Lease
                Asset.AssetLease.Lease.Description
                    no label
        visible when (Asset.LeasedAsset)
            paragraph
                Asset.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                Asset.AssetLease.LeaseCompany.Name
                    no label
                    display as text
        three column independent
            column1
                ModelNumber
                SerialNumber
                BarCode
            column2
                LocationDetail
                    select is ActiveAssetLocationDetails
                ItemCondition
                InventoryDate
            column3
                GeographicalLatitude
                    label is "Latitude"
                GeographicalLongitude
                    label is "Longitude"
                GeographicalAltitude
                    label is "Altitude"
        blank line
        header3 of "SourceReferenceFields"
        two column independent
            column1
                text of "Internal"
                    bold
                    color of blue
                    align as label
                paragraph
                    InvoiceAndPurchaseOrderInformation.InvoiceCompany
                paragraph
                    InvoiceAndPurchaseOrderInformation.Vendor
                    InvoiceAndPurchaseOrderInformation.Vendor.VendorName
                        no label
                        display as text
                paragraph
                    InvoiceAndPurchaseOrderInformation.PayablesInvoice
                    button of "<InvoiceAndPurchaseOrderInformation.PayablesInvoice.Invoice>"
                        visible when (PayablesInvoiceExists)
                        link is PayablesInvoiceLink
                paragraph
                    InvoiceAndPurchaseOrderInformation.PurchaseOrder
                    button of "PurchaseOrder"
                        visible when (HasPurchaseOrder)
                        link is ViewPO
                paragraph
                    InvoiceAndPurchaseOrderInformation.PurchaseOrderLine
                paragraph
                    AssetProject
                    AssetProject.Project.Description
                        no label
                        display as text
            column2
                text of "External"
                    bold
                    color of blue
                    align as label
                AssetItemReferenceFields.ReferenceCompany
                AssetItemReferenceFields.ReferenceVendor
                AssetItemReferenceFields.ReferenceInvoice
                AssetItemReferenceFields.ReferencePurchaseOrder
                AssetItemReferenceFields.ReferenceSequenceNumber
                AssetItemReferenceFields.ReferenceProject
