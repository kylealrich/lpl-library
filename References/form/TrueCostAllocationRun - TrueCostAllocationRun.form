TrueCostAllocationRun is a CompositeForm
    title is "AllocationRun<TrueCostAllocationRun.AllocationRun>"
    context form is TrueCostMain
        background is theme color
    Actions
        action is Reconcile
            hide when invalid
        action is GenerateCostBehaviorSummary
            hide when invalid
        action is PublishForBirstReport
            hide when invalid
        action is UnpublishForBirstReport
            hide when invalid
        action is UnfinalizeFinalized
            hide when invalid
        action is FinalizeCompleted
            hide when invalid
        action is CancelJournalized
            hide when invalid
        action is GenerateCost
            label is "GenerateUnitCost"
            hide when invalid
        action is DeleteRunStarted
            hide when invalid
        action is DeleteRunCompleted
            hide when invalid
        action is DeleteRunFailed
            hide when invalid
        action is refresh
            label is "_"
            mouse over text is "Refresh"
    Parameters is a Panel
        form is TrueCostAllocationRunParameters
    Transactions is a Panel
        visible when (NoJournalizedTransactions)
        list is TrueCostAllocationRun.AllocationRun.AllocationTransactionDetail set.TrueCostAllocationRunDetailList
    JournalizedTransactions is a Panel
        visible when (not NoJournalizedTransactions)
        list is TrueCostAllocationRun.AllocationRun.AllocationJournalizedDetail set.AllocationRunDetailList
    Reconciliation is a Panel
        visible when (ShowReconciliation)
        form is ReconciliationDataForm
    CostBehavior is a Panel
        visible when (CostBehaviorSummaryStatusGenerated)
        list is TrueCostAllocationRun.AllocationRun.TrueCostCostBehaviorSummaryRel.TrueCostCostBehaviorSummaryList
    CapacityVolumes is a Panel
        visible when (TrueCostAllocationRun.AllocationRun.UseCapacityLedger)
        list is TrueCostCapacityVolumeRel.TrueCostCapacityVolumeList
    ExpenseSnapshot is a Panel
        visible when (WithAllocationSnapshot)
        list is TrueCostAllocationRun.AllocationSnapshot.AllocationSnapshotDetailRel.ExpenseSnapshotDetailList
    UnitCost is a Panel
        visible when (WithUnitCost)
        list is GetUnitCostRel.TrueCostResourceUnitCostList
