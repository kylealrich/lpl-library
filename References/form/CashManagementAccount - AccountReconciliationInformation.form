AccountReconciliationInformation is a Form
    title is "ReconciliationInformation"
    Layout
        two column
            ReconcileToCashLedger
            ReconcileToForecast
        two column
            ReconcileToOtherSystem
        paragraph
            ReconciliationMethod
            visible when (ReconciliationMethod.UseReconciliationMatchRules)
                BankReconciliationMatchRuleGroup
                BankReconciliationMatchRuleGroup.Description
                    no label
                    display as text
        two column
            column1
                AutoReconcileStatementLines
                AllowOneSidedReconciliations
            column2
                AllowMultipleStatementsPerDay
                SaveAllVersionsOfReconciliationBalancesReport
        header3 of "OtherSystemAndForecastReconciliationTolerances"
        visible when (ReconcileToCashLedger.Primary)
            text of "Note:ReconciliationTolerancesFor_\\Cash_\\LedgerAreDefinedOn_\\Company_\\Cash_\\Code"
                italics
        paragraph
            ReconciliationTolerancePercent
            text of "Or"
            ReconciliationToleranceAmount
        visible when (ReconcileToOtherSystem.Primary)
            paragraph
                ReconVariancePostingAccount
                    label is "OtherSystemVarianceAccount"
                    compact format
        blank line
        header3 of "CashLedgerPostingDefaults"
        paragraph
            CashCode
                select is CashCodeForAccountSelectList
            CashCode.Description
                no label
                display as text
            CashLedgerTransactionNumbering
        paragraph
            DebitTransactionCode
                select is BankDebitTransactionCodes
            DebitTransactionCode.Description
                no label
                display as text
        paragraph
            CreditTransactionCode
                select is BankCreditTransactionCodes
            CreditTransactionCode.Description
                no label
                display as text
        paragraph
            AutoReleaseCashLedgerTransactions
