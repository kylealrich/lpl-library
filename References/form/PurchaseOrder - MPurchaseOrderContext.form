MPurchaseOrderContext is a Form
    title is "PurchaseOrder"
    Layout
        display as text
            two column table
                column1
                    Buyer.Employee.FirstLastName
                        label is "Buyer"
                    PurchaseOrderDate
                        label is "PurchaseOrderDate"
                column2
                    MobileTotalWithCurrencyDisplay
                        label is "Total"
                    DefaultDeliveryDate
                        label is "DeliveryDate"
        two column table
            column1
                paragraph
                    DerivedPurchaseOrderStatus
                        label is "Status"
                        display as tag
                            color of yellow when (PurchaseOrderLifeCycleState.CreateInProgress)
                            color of yellow when (PurchaseOrderLifeCycleState.Unreleased)
                            color of yellow when (PurchaseOrderLifeCycleState.ReleaseInProgress)
                            color of green when (PurchaseOrderLifeCycleState.Released)
                            color of gray when (PurchaseOrderLifeCycleState.Closed)
                            color of gray when (PurchaseOrderLifeCycleState.Historical)
                            color of red when (PurchaseOrderLifeCycleState.CancelInProgress)
                            color of red when (PurchaseOrderLifeCycleState.Canceled)
                            color of gray when (PurchaseOrderLifeCycleState.Deleted)
                            color of yellow when (PurchaseOrderLifeCycleState.DeleteInProgress)
            column2
                paragraph
                    visible when (HasExistingPODocument)
                        button of "View"
                            view first LatestPODocumentRel.Attachment.File
                            label is "Document"
                            display as link
                    visible when (HasIDMDocument)
                        button of "View"
                            link is external "<DerivedIDMDocumentLink>"
                            label is "Document"
                            display as link
