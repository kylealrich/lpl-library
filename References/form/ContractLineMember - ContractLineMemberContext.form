ContractLineMemberContext is a Form
    Layout
        four column distributed
            column1
                display as text
                    paragraph
                        Contract.RepresentativeText
                        ContractLine
                            label is "Line"
                    paragraph
                        ContractLine.ItemNumber
                            label is "Item"
                        ContractLine.ItemDescription
                            label is "Description"
                        ContractLine.UOM.UnitOfMeasure
                            label is "UOM"
                    visible when (Contract.ManufacturerOrDistributor.DistributorContract)
                        visible when (MfgContractTierInfo.Tier entered)
                            paragraph
                                MfgContractTierInfo.MfgContract.RepresentativeText
                                    label is "ManufacturerContract"
                                visible when (MfgContractTierInfo.MfgContract.WorkingContractUnique)
                                    MfgContractTierInfo.MfgContract.WorkingContractID
            column2
                display as text
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                    visible when (ContractLine.VendorItem entered)
                        ContractLine.VendorItem
            column3
                display as text
                    Contract.WorkingContractID
            column4
                display as text
                    visible when (CompanyEntered)
                        ContractLineMember.Company.RepresentativeText
                            label is "Company"
                    visible when (PricingGroupEntered)
                        paragraph
                            ContractLineMember.PricingGroup.RepresentativeText
                                label is "PricingGroup"
                            visible when (PricingGroupInactive)
                                text of "PricingGroupIsInactive"
                                    color of red
                    visible when (LocationEntered)
                        paragraph
                            ContractLineMember.Location.RepresentativeText
                                label is "Location"
                            visible when (LocationInactive)
                                text of "LocationIsInactive"
                                    color of red
                    visible when (ReqLocEntered)
                        paragraph
                            ContractLineMember.RequestingLocation.RequestingLocationNameID
                                label is "RequestingLocation"
                            visible when (RequestingLocationInactive)
                                text of "RequestingLocationIsInactive"
                                    color of red
