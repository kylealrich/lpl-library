MassActivate is an ActionForm
    action is MassActivate
    title is "MassActivate"
    Layout
        header3 of "EnterACloseTaskSelectionToDefineWhichInactiveTasksShouldBeActivated"
        paragraph
            PrmCloseTaskSelection
                label is "CloseTaskSelection"
            PrmCloseTaskSelection.Condition
                no label
                display as text
        paragraph
            PrmTaskLevel
                label is "TaskLevel"
        blank line
        visible when (PrmTaskLevel.Summary)
            text of "Note:SummaryTasksAndItsDescendantsWillBeActivated"
                italics
        visible when (PrmTaskLevel.Detail)
            text of "Note:WillNotActivateSelectedTasksThatHaveAnInactivePrerequisiteTask"
                italics
