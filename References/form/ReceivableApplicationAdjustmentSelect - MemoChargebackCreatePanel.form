MemoChargebackCreatePanel is a Form
    Layout
        visible when (MemoChargebackAdjustment)
            blank line
            header2 of "MemoChargeback"
            four column distributed
                column1
                    paragraph
                        MemoChargeback.Company
                            label is "Company"
                        MemoChargeback.Company.Name
                            no label
                            display as text
                column2
                    paragraph
                        MemoChargeback.Customer
                            label is "Customer"
                        MemoChargeback.Customer.Name
                            no label
                            display as text
                column3
                    paragraph
                        MemoChargeback.AdjustmentReason
                            label is "AdjustmentReason"
                            select is DerivedMemoChargebackCompanyReceivableReasonRel.ReceivableReasonCodeChargebackMemoList
                            display as required
                        MemoChargeback.AdjustmentReason.Description
                            no label
                            display as text
                column4
                    paragraph
                        MemoChargeback.ProcessLevel
                            label is "ProcessLevel"
                            select is DerivedMemoChargebackCompanyReceivableProcessLevelRel.ReceivableProcessLevelPrimaryList
                        MemoChargeback.ProcessLevel.Name
                            no label
                            display as text
            visible when (MemoChargeback.Company.AllowManualChargebackInvoiceNumbering)
                four column distributed
                    column1
                        paragraph
                            MemoChargeback.MemoChargeback
                                label is "CrossReferenceNumber"
                    column2
                        paragraph
                            CreditAdjustAmount
                                label is "ApplicationAdjustAmount"
                    column3
                        paragraph
                            MemoChargeback.DebitMemoReason
                                label is "MemoReason"
                    column4
                        paragraph
                            MemoChargeback.InvoiceNumber
                                label is "InvoiceNumber"
            visible when (not MemoChargeback.Company.AllowManualChargebackInvoiceNumbering)
                four column distributed
                    column1
                        paragraph
                            MemoChargeback.MemoChargeback
                                label is "CrossReferenceNumber"
                    column2
                        paragraph
                            CreditAdjustAmount
                                label is "ApplicationAdjustAmount"
                    column3
                        paragraph
                            MemoChargeback.DebitMemoReason
                                label is "MemoReason"
                    column4
                        paragraph
                            text of "_"
            single column
                DistributionAccount
                    label is "DistributionAccount"
                    compact format
                visible when (DistributionAccount.GeneralLedgerChartAccount entered)
                    DistributionAccount.GeneralLedgerChartAccount.AccountDescription
                        display as text
            visible when (ReceivablePayment.Company.CashOperatorRequired)
                paragraph
                    ReceivableOperator
                        label is "Operator"
            two column distributed
                column1
                    visible when (IsTaxWithholding)
                        paragraph
                            ARIncomeWithholdingCode
                column2
                    visible when (IsTaxWithholding)
                        paragraph
                            ARIncomeWithholdingDocumentNumber
