Reminder is an ActionForm
    action is Reminder
    title is "Reminder"
    Layout
        header3 of "EnterDetailsAboutThisReminder"
        single column
            ReminderDescription
                label is "Description"
            paragraph
                ReminderBeginDate
                    label is "BeginDate"
                ReminderDueDate
                    label is "DueDate"
            ReminderNotes
                label is "Notes"
                use text area of 5 lines
        header3 of "AddAnAttachmentOrURL"
        single column
            ReminderAttachment
                label is "Attachment"
            ReminderLink
                label is "URL"
