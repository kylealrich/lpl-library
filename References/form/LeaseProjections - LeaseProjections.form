LeaseProjections is an ActionForm
    action is LeaseProjections
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
            visible when (LeaseCompanyGroup.Lease)
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Lease
                        select is AllLeases
                    Lease.Description
                        no label
                        display as text
            visible when (LeaseCompanyGroup.CompanyGroup)
                paragraph
                    CompanyGroup
                        label is "CompanyGroup"
                        select is CompanyGroupsInFinanceEnterpriseGroup
                    CompanyGroup.Description
                        no label
                        display as text
        paragraph
            LeaseClass
                label is "LeaseClassification"
            LeaseType
                select is LeaseTypes
            LeaseType.Description
                no label
                display as text
        paragraph
            Year
            Period
        paragraph
            ClosedLease
                label is "Closed"
            FrClsdLseDate
                label is "ClosedDateBegin"
            ToClsdLseDate
                label is "ClosedDateEnd"
        paragraph
            RetiredLease
                label is "Retired"
            FrRetLseDate
                label is "RetiredDateBegin"
            ToRetLseDate
                label is "RetiredDateEnd"
        single column
            Simulated
        paragraph
            ExecCode
                label is "NonLeaseCompoentCosts"
            Report
        paragraph
            SortOption
                label is "Sort"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                LeaseProjectionsReport_RDG
            column2 of 25%
                LeaseProjectionsReport_XPT
