Supplier is a Form
    title is "Supplier"
    Actions
        action is save and close
        action is refresh
            label is "_"
    Layout
        three column
            column1
                paragraph
                    TaxIdGroup.TaxIdType
                        display as required when (RequireTaxId)
                        when value changed
                            refresh RequireVAT
                            refresh RequireTaxId
                    TaxIdGroup.TaxIdType.Description
                        no label
                        display as text
                    visible when (TaxIDTypeEntered)
                        text of "TaxIDTypeEntered"
                            italics
                    visible when (not TaxIDTypeEntered)
                        text of "TaxIDTypeNotEntered"
                            italics
                VATRegistrationCountry
                    display as required when (RequireVAT)
                    when value changed
                        refresh RequireVAT
                        refresh RequireTaxId
                DoingBusinessAs
                    show up to 30 characters
                BusinessType
                GlobalLocationNumber
                Active
                    display only
                GroupPurchasingOrganization
            column2
                paragraph
                    visible when (ChangeTaxID)
                        TaxIdGroup.TaxId
                            display as required when (RequireTaxId)
                            when value changed
                                refresh RequireVAT
                                refresh RequireTaxId
                    visible when (not ChangeTaxID)
                        ChangeTaxID
                    visible when (TaxIDEntered)
                        text of "TaxIDEntered"
                            italics
                    visible when (not TaxIDEntered)
                        text of "TaxIDNotEntered"
                            italics
                VATRegistrationNumber
                    display as required when (RequireVAT)
                    when value changed
                        refresh RequireVAT
                        refresh RequireTaxId
                DandBNbr
                    label is "Dun&Bradstreet"
                paragraph
                    Vendor
                        label is "VendorID"
                    Vendor.VendorName
                        no label
                        display as text
                    visible when (TaxIdVerifiedByVendormate)
                        text of "*VerifiedByVendormate"
                            bold
                paragraph
                    WebAddress
                        label is "Website"
                    text of "Enter_http://_WhenAdding_Website"
                        italics
                PreQualified
            column3
                paragraph
                    TaxCertification.File
                        label is "<TaxCertificationLabel>"
                    visible when (TaxCertificationExists)
                        button of "View"
                            view TaxCertification.File
                            display as link
                DateRegistered
                    label is "RegistrationDate"
                    display as text
        paragraph
            ParentSupplier
            ParentSupplierRel.SupplierName
                no label
                display as text
        visible when (SupplierExists)
            paragraph
                ContactLocationDisplay
                visible when (ContactLocationDisplay.OnlyLocationDocuments)
                    PrimaryContactViewAllDocuments
                visible when (ContactLocationDisplay.LocationAndNoLocationDocuments)
                    PrimaryContactViewAllDocuments
        visible when (ContactCanEnterInvoices)
            header2 of "SupplierCreatedInvoiceProcessing"
            two column
                text of "EnterAValueHereIfAllInvoicesAreOfTheSameType"
                    italics
                SupplierSubmittedInvoiceType
            two column
                SuppressDisplayOfDueDate
                    label is "SuppressDisplay_ofDueDateWhenSupplierEnteringInvoices"
                RequireInvoiceEntryOnPortal
            two column
                AllowMixedEntryOfInvoices
                AllowAdhocAddOnCharges
        header2 of "_"
        two column distributed
            column1
                text of "MailingAddress"
                    header2
                single column
                    MailingAddress
                        form is PostalAddressShortRequired
                    visible when (SupplierGroup.DisplayTypeForRegistration)
                        MailingAddress.Type
            column2
                text of "RemitToName_andAddress"
                    header2
                single column
                    SameAsAddressAbove
                        label is "CheckIfRemitToAddressIs_theSame_asMailingAddress"
                paragraph
                    BillingFirstName
                        label is "RemitToFirstName"
                    BillingLastName
                        label is "RemitToLastName"
                single column
                    visible when (not SameAsAddressAbove)
                        BillingAddress
                            form is PostalAddressShortRequired
                        visible when (SupplierGroup.DisplayTypeForRegistration)
                            BillingAddress.Type
