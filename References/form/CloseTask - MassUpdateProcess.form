MassUpdateProcess is an ActionForm
    action is MassUpdateProcess
    title is "MassUpdateProcess"
    Layout
        header2 of "EnterACloseTaskSelectionToUpdate"
        paragraph
            PrmCloseTaskSelection
                label is "CloseTaskSelection"
            PrmCloseTaskSelection.Condition
                no label
                display as text
        blank line
        header2 of "CloseTaskValuesToUpdate"
        header3 of "ProcessingOptions"
        paragraph
            PrmCalendar
                label is "Calendar"
            PrmCalendar.Description
                no label
                display as text
        paragraph
            PrmCompany
                label is "Company"
            PrmCompany.FinanceCompanyField.Name
                no label
                display as text
        two column distributed
            PrmPriority
                label is "Priority"
            paragraph
                PrmRisk
                    label is "Risk"
        header3 of "ScheduleDetails"
        single column
            PrmChangeScheduleDetailNumberOfDays
                label is "ChangeNumberOfDays"
        visible when (PrmChangeScheduleDetailNumberOfDays)
            single column independent
                text of "EnterNumberOfDaysFromThePeriodEndDate"
                    header4
                    bold
                    color of blue
            paragraph
                PrmBeginDaysFromPeriodEnd
                    label is "Begin"
                text of "Days_\\From_\\Period_\\End"
                PrmChangeBeginNumberOfDays
                    label is "Change"
                PrmBeginTime
                    label is "At"
                PrmChangeBeginNumberOfDaysTime
                    label is "Change"
            paragraph
                PrmDueDaysFromPeriodEnd
                    label is "Due"
                text of "Days_\\From_\\Period_\\End"
                PrmChangeDueNumberOfDays
                    label is "Change"
                PrmDueTime
                    label is "At"
                PrmChangeDueNumberOfDaysTime
                    label is "Change"
            paragraph
                text of "<NumberOfDaysNote>"
                    bold
                    align as label
        single column
            PrmChangeScheduleDetailDayOfMonth
                label is "ChangeDayOfMonth"
        visible when (PrmChangeScheduleDetailDayOfMonth)
            single column independent
                text of "EnterASpecificDayOfTheMonthForThePeriod"
                    header4
                    bold
                    color of blue
            paragraph
                PrmBeginDayOfMonth
                    label is "Begin"
                text of "Day_\\Of_\\The_\\Month__Or"
                PrmBeginLastDayOfMonth
                    label is "BeginOnTheLastDayOfTheMonth"
                PrmChangeBeginDayofMonth
                    label is "Change"
                PrmBeginTime
                    label is "At"
                PrmChangeBeginDayofMonthTime
                    label is "Change"
            paragraph
                PrmBeginDayForNextMonth
                    label is "ForTheMonthFollowingThePeriod"
                visible when (PrmBeginDayForNextMonth.ChangeToTrue)
                    text of "ForTheMonthFollowingThePeriodWillBeSetToTRUEForAllCloseTasksBeingUpdated"
                        italics
                visible when (PrmBeginDayForNextMonth.ChangeToFalse)
                    text of "ForTheMonthFollowingThePeriodWillBeSetToFALSEForAllCloseTasksBeingUpdated"
                        italics
            paragraph
                PrmDueDayOfMonth
                    label is "Due"
                text of "Day_\\Of_\\The_\\Month__Or"
                PrmDueLastDayOfMonth
                    label is "DueOnTheLastDayOfTheMonth___"
                PrmChangeDueDayofMonth
                    label is "Change"
                PrmDueTime
                    label is "At"
                PrmChangeDueDayofMonthTime
                    label is "Change"
            paragraph
                PrmDueDayForNextMonth
                    label is "ForTheMonthFollowingThePeriod"
                visible when (PrmDueDayForNextMonth.ChangeToTrue)
                    text of "ForTheMonthFollowingThePeriodWillBeSetToTRUEForAllCloseTasksBeingUpdated"
                        italics
                visible when (PrmDueDayForNextMonth.ChangeToFalse)
                    text of "ForTheMonthFollowingThePeriodWillBeSetToFALSEForAllCloseTasksBeingUpdated"
                        italics
        blank line
        paragraph
            PrmDueTimeSensitive
                label is "IsTimeSensitive"
            visible when (PrmDueTimeSensitive.ChangeToTrue)
                text of "IsTimeSensitiveWillBeSetToTRUEForAllCloseTasksBeingUpdated"
                    italics
            visible when (PrmDueTimeSensitive.ChangeToFalse)
                text of "IsTimeSensitiveWillBeSetToFALSEForAllCloseTasksBeingUpdated"
                    italics
        two column distributed
            PrmHoursRequired
                label is "EstimatedHoursToComplete"
            paragraph
                PrmScheduleForWorkDaysOnly
                    label is "ScheduleForWorkDaysOnly"
                visible when (PrmScheduleForWorkDaysOnly.ChangeToTrue)
                    text of "ScheduleForWorkDaysOnlyWillBeSetToTRUEForAllCloseTasksBeingUpdated"
                        italics
                visible when (PrmScheduleForWorkDaysOnly.ChangeToFalse)
                    text of "ScheduleForWorkDaysOnlyWillBeSetToFALSEForAllCloseTasksBeingUpdated"
                        italics
        visible when (CloseManagementGroup.HasTaskTypes)
            header3 of "TaskType"
            two column distributed
                paragraph
                    PrmPrimaryTaskType
                        label is "Primary"
                        select is PrimaryCloseTaskTypeSelect
                    PrmPrimaryTaskType.Description
                        no label
                        display as text
                PrmRemovePrimaryTaskType
                    label is "RemovePrimaryTaskType"
            two column distributed
                paragraph
                    PrmSecondaryTaskType
                        label is "Secondary"
                        select is SecondaryCloseTaskTypeSelect
                    PrmSecondaryTaskType.Description
                        no label
                        display as text
                PrmRemoveSecondaryTaskType
                    label is "RemoveSecondaryTaskType"
            two column distributed
                paragraph
                    PrmTertiaryTaskType
                        label is "Tertiary"
                        select is TertiaryCloseTaskTypeSelect
                    PrmTertiaryTaskType.Description
                        no label
                        display as text
                PrmRemoveTertiaryTaskType
                    label is "RemoveTertiaryTaskType"
        header3 of "RequirementsForCompletion"
        paragraph
            PrmRequiresApproval
                label is "Approval"
            visible when (PrmRequiresApproval.ChangeToTrue)
                text of "ApprovalWillBeSetToTRUEForAllCloseTasksBeingUpdated"
                    italics
            visible when (PrmRequiresApproval.ChangeToFalse)
                text of "ApprovalWillBeSetToFALSEForAllCloseTasksBeingUpdated"
                    italics
        visible when (PrmRequiresApproval.ChangeToTrue)
            paragraph
                PrmApprovalCode
                    label is "Code"
                    select is ApprovalCodesWithLevels
                PrmApprovalCode.Description
                    no label
                    display as text
        paragraph
            PrmRequireSupportingDoco
                label is "AttachSupportingDocumentation"
            visible when (PrmRequireSupportingDoco.ChangeToTrue)
                text of "AttachSupportingDocumentationWillBeSetToTRUEForAllCloseTasksBeingUpdated"
                    italics
            visible when (PrmRequireSupportingDoco.ChangeToFalse)
                text of "AttachSupportingDocumentationWillBeSetToFALSEForAllCloseTasksBeingUpdated"
                    italics
        header3 of "Instructions"
        single column
            PrmTaskDetail
                no label
                align as label
                use text area of 5 lines
