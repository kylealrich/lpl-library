InvoiceLineInformation is a Form
    Layout
        display as text
            two column
                Company.PurchasingCompany.RepresentativeText
                VendorRel.RepresentativeText
            single column
                Contract.RepresentativeText
                    label is "RebateContract"
            paragraph
                ContractRebateType
                    label is "RebateType"
                ContractRebateType.Description
                    no label
            single column
                ContractRebateDue
                    label is "RebateDueDate"
                Invoice
            visible when (not Contract.ServicePurchaseType)
                two column
                    DerivedPoNumber
                        label is "PONumber"
                    PurchaseOrderLine
                        label is "Line"
                single column
                    PurchaseOrderLine.Item
            paragraph
                CmContract
                    label is "Contract"
                CmContractRel.Name
                    no label
            visible when (MfgContract entered)
                paragraph
                    MfgContract
                        label is "ManufacturerContract"
                    MfgContractRel.Name
                        no label
            single column
                InvoiceDte
                    label is "InvoiceDate"
            visible when (not Contract.ServicePurchaseType)
                paragraph
                    Location
                    LocationRel.Name
                        no label
            single column
                ManufacturerUnitCst
                    label is "ManufacturerUnitCost"
                MatchedQty
                    label is "MatchedQuantity"
                visible when (InvoiceAmount entered)
                    InvoiceAmount
                HasContractOnRebate
