InvoiceSearchForm is a SearchForm
    title is "SearchInvoices"
    Layout
        three column distributed
            column1
                InvoiceSearchDocument
                    label is "Keyword"
                    use text area of 1 lines
                paragraph
                    ProcessLevel
                    ProcessLevel.Name
                        no label
                        display as text
                InvoiceDate
                    label is "InvoiceDate"
                Status
                paragraph
                    IsOnHold
                        label is "OnHold"
                    TransientHoldCode
            column2
                paragraph
                    Company
                        label is "Company"
                    Company.Name
                        no label
                        display as text
                Invoice
                    label is "InvoiceNumber"
                DueDate
                FirstPurchaseOrder
                VoucherNumber
                    compact format
                ServiceContract
                    select is ServiceContractsForInvoicing
            column3
                paragraph
                    Vendor
                        label is "Vendor"
                    Vendor.VendorName
                        no label
                        display as text
                InvoiceAmount.CurrencyAmount
                    label is "InvoiceAmount"
                paragraph
                    APClerk
                    APClerk.PreferredSimplePresentationName
                        no label
                        display as text
                ErrorsExists
                    label is "Error"
                InvoiceType
                HasRetainage
