MobileKitItemContext is a Form
    title is "KitItem"
    Layout
        single column
            display as text
                KitItem.Item
                    label is "KitItem"
                ItemForKitItemRel.Description
                    display as text
                paragraph
                    MakeCode
                        label is "MakeCode"
                    Active
                    visible when (MakeToOrderExists)
                        ItemForKitItemRel.StockUOM
                            label is "UOM"
