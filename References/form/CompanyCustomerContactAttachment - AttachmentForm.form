AttachmentForm is a Form
    is primary
    title is "Attachment"
    Layout
        paragraph
            CompanyCustomerContact
                display as text
        single column
            CompanyCustomerContactAttachment
                label is "AttachmentNumber"
                display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        paragraph
            Comment
