StudentActivitySchoolForm is a CompositeForm
    is primary
    title is "<mode>School"
    show panel control on left
    Actions
        action is Create
        action is ClosePeriod
            hide when invalid
        action is ReopenLastClosedPeriod
            hide when invalid
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    SchoolInformation is a Panel
        form is SchoolInformationForm
    Activities is a Panel
        list is SchoolActivityAccount set.SchoolActivities
            helper list is StudentActivityAccountRel.ActivityAccounts
                action is AddActivityToSchool
                    invoked.School = StudentActivitySchool
                    invoked.SchoolGroup = blank
    AccountCodes is a Panel
        list is SchoolAccountCode set.AccountCodeList
            helper list is StudentActivityAccountCodeRel.AccountCodeList
                action is AddAccountCodeToSchool
                    invoked.School = StudentActivitySchool
                    invoked.SchoolGroup = blank
    Classes is a Panel
        list is StudentActivitySchoolClass set.SchoolClasses
    Students is a Panel
        list is StudentRecordRel.StudentRecordList
    JournalPostings is a Panel
        visible when (not StudentActivityDistrict.DistrictLevelPosting)
        list is StudentActivityJournal set.DescendingActivityJournalForSchoolList
