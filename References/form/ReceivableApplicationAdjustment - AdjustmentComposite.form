AdjustmentComposite is a CompositeForm
    is primary
    title is "Adjustment"
    context form is AdjustmentContext
        background is theme color
    Main is a Panel
        title is "Main"
        form is AdjustmentsForApplicationForm
    CurrencyAmounts is a Panel
        form is CurrencyAmounts
    ApprovalInformation is a DashBoardPanel
        title is "ApprovalHistory"
        visible when (DisplayApprovalInformationPanel)
        show 4 columns
        Progress is a Panel
            triple width
            form is ProcessIndicatorForm
        History is a Panel
            visible when (HasApprovalHistory)
            list is ReceivableApplicationAdjustmentApprovalHistory set.ReceivableApplicationAdjustmentApprovalHistoryCardList
    ApprovalHistory is a Panel
        visible when (DisplayApprovalTrackingPanel)
        list is ReceivableApplicationAdjustmentApprovalHistory set.ReceivableApplicationAdjustmentApprovalHistorySortedList
    Attachments is a Panel
        visible when (HasApplicationAdjustmentNeedsAttachment)
        list is ReceivableApplicationAdjustmentAttachment set.primary
