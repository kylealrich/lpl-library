CurrentChangesMainForm is a Form
    title is "Term_andConditionUpdates"
    Layout
        visible when (not ActiveUpdatesToTextExist)
            single column
                HeaderText
                    no label
                    display as text
                Description
                    no label
                    display as text
        visible when (ActiveUpdatesToTextExist)
            single column
                DerivedCompareCurrentPreviousHeaderText
                    label is "HeaderText"
                    display as text
                DerivedCompareCurrentPreviousDescription
                    label is "Description"
                    display as text
