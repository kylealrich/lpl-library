RecurringInvoiceTemplateAttachmentForm is a Form
    is primary
    title is "RecurringInvoiceTemplateAttachment"
    Layout
        single column
            RecurringInvoiceTemplate
                display as text
            RecurringInvoiceTemplateAttachment
                label is "AttachmentNumber"
                display as text
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                Attachment.File
                    label is "Attachment"
                visible when (HasAttachment)
                    button of "View"
                        view Attachment.File
                        display as link
            Comment
