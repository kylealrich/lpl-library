PhoneGeneralLedgerTransactionForm is a Form
    title is "Transaction"
    Layout
        single column
            GeneralLedgerTransaction
                label is "GlobalLedgerTransaction"
                display as text
        FinanceCodeBlock
            label is "FinanceStructure"
            display only
            compact format
        single column
            FinanceCodeBlock.GeneralLedgerChartAccount.AccountDescription
                display as text
        single column
            TransactionAmount
                label is "Amount"
                display as text
            CurrencyCode
                label is "Currency"
                display as text
