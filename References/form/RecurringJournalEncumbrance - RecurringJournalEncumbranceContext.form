RecurringJournalEncumbranceContext is a Form
    is primary
    title is "RecurringJournalEncumbrance"
    Layout
        three column
            AccountingEntity
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
            AccountingEntity.Name
                no label
                display as text
            GeneralLedgerClosePeriod
                label is "Period"
        two column
            RecurringJournalControl
                label is "JournalNumber"
            RecurringJournalEncumbrance.SequenceNumber
                label is "Line"
        single column
            visible when (RecuringBridgeFromAccount)
                FinanceCodeBlock
                    label is "FromFinanceStructure"
                    display only
                    compact format
            visible when (RecuringBridgeFromAccount)
                FinanceCodeBlock
                    label is "ToFinanceStructure"
                    display only
                    compact format
            visible when (RecuringTransaction)
                FinanceCodeBlock
                    label is "FinanceStructure"
                    display only
                    compact format
        three column
            PostingDate
                label is "PostDate"
            TransactionAmount
                label is "Amount"
            CurrencyCode
        blank line
        three column
            text of "Amount"
            text of "Currency"
            text of "Rate"
        ReportCurrencyAmount
