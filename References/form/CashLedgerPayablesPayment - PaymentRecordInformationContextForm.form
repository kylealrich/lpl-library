PaymentRecordInformationContextForm is a Form
    title is "PaymentRecordInformation"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        PayGroup
                        PayGroup.Name
                            no label
                    paragraph
                        CashCode
                        CashCode.Description
                            no label
                    paragraph
                        CashLedgerPayablesPayment.BankTransactionCode
                            select is CashPayments
                        CashLedgerPayablesPayment.BankTransactionCode.Description
                            no label
                column2
                    paragraph
                        PaymentDate
                    paragraph
                        TransactionNumber
                    paragraph
                        CashLedgerTransactionIdentifier
                column3
                    paragraph
                        PaymentStatus
                    paragraph
                        visible when (DisplayPaymentStatus)
                            first APPaymentCreditTransferRel.Status
                                label is "TransactionStatus"
                        visible when (not DisplayPaymentStatus)
                            Status
                                label is "TransactionStatus"
                    visible when (DisplayReleasedStatus)
                        paragraph
                            ReleasedStatus
        blank line
        display as text
            three column distributed
                column1
                    paragraph
                        InvoiceVendor
                        InvoiceVendorName
                            no label
                    paragraph
                        PaidVendor
                        PaidVendor.VendorName
                            no label
                    visible when (HasRemitToCode)
                        paragraph
                            RemitToCode
                            RemitToCode.VendorName
                                no label
                column2
                    paragraph
                        PayCurrency
                            label is "InvoiceCurrency"
                    paragraph
                        PaymentAmount
                            label is "PaidInvoiceAmount"
                    paragraph
                        PaidAmountInvoiceCurrency
                            label is "AppliedInvoiceAmount"
                column3
                    paragraph
                        CashCode.Currency
                            label is "PaymentCurrency"
                    paragraph
                        PaymentAmountBankAccountCurrency.EnteredCurrencyAmount
                            label is "PaymentAmount"
