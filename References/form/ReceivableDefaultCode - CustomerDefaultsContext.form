CustomerDefaultsContext is a Form
    Layout
        two column
            column1
                visible when (not ReceivableDefaultCodeExists)
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                visible when (ReceivableDefaultCodeExists)
                    paragraph
                        RepresentativeText
                            display as text
            column2
                visible when (not ReceivableDefaultCodeExists)
                    paragraph
                        ReceivableDefaultCode
                            label is "DefaultCode"
                            select is DefaultCodes
                        Description
                visible when (ReceivableDefaultCodeExists)
                    paragraph
                        ReceivableDefaultCode
                            label is "DefaultCode"
                            display as text
                            select is DefaultCodes
                        Description
