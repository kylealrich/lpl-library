MobileFranchiseContractComment is a Form
    propagate as a drill
    title is "FranchiseContractComment"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            label is "_"
    Layout
        single column
            FranchiseContract
                display as text
            FranchiseContractComment
                display as text
            Name
                label is "Title"
            Comment
        paragraph
            Attachment
                label is "Attachment"
                compact format
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
