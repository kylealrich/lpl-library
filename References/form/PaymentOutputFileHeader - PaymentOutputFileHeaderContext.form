PaymentOutputFileHeaderContext is a Form
    title is "PaymentOutputFile"
    Layout
        display as text
            four column distributed
                column1
                    CashManagementAccount
                    BankTransactionCode
                    PayGroupOutput
                    visible when (CashCodeEntered)
                        CashCode
                    visible when (CashCodeGroupEntered)
                        CashCodeGroup
                    visible when (ReceiverBankEntered)
                        ReceiverBank
                column2
                    FileName
                    RequisitionType
                    CreateDate
                    ProcessFlowName
                    visible when (ReceiverEmailAddressEntered)
                        ReceiverEmailAddress
                column3
                    TotalNumberOfRecords
                    TotalPaymentAmount
                    visible when (CreatedFromElectronicPaymentCreation)
                        TotalPayBankAmount
                    paragraph
                        visible when (PaymentDetailHasBeenEmailed)
                            text of "<EmailInformation>"
                                bold
                column4
                    visible when (ShowHeaderFile)
                        paragraph
                            HeaderFile.Title
                                label is "HeaderFile"
                            visible when (HasHeaderAttachment)
                                button of "View"
                                    view HeaderFile.File
                                    display as link
                                HeaderOutputFileName
                                    no label
                    paragraph
                        DetailFile.Title
                            label is "DetailFile"
                        visible when (HasDetailAttachment)
                            button of "View"
                                view DetailFile.File
                                display as link
                            visible when (not IsFlatFile)
                                DetailOutputFileName
                                    no label
                            visible when (IsFlatFile)
                                FlatFileDetailOutputFileName
                                    no label
                    paragraph
                        visible when (HasRemittanceAttachment)
                            RemittanceFile.Title
                                label is "RemittanceFile"
                            button of "View"
                                view RemittanceFile.File
                                display as link
                            RemittanceOutputFileName
                                no label
