AmendedTerms is a CompositeForm
    title is "AmendedTerms_andConditions"
    context form is AmendedTermsContext
        background is theme color
    Actions
        action is refresh
            label is "_"
    Term is a Panel
        form is AmendedTermsMain
    Attachments is a Panel
        visible when (ContractTermAndConditionAttachmentExists)
        list is ContractTermsAttachmentByDisplayRel.ContractTermAndConditionAttachmentViewOnly
