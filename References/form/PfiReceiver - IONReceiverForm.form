IONReceiverForm is a Form
    title is "IONInboxReceiver"
    Layout
        two column
            PfiChannel
            text of "<PfiChannel.Description>"
        single column
            PfiReceiver
            IONReceiver.RcvrType
            IONReceiver.ToLogicalId
                label is "ToLogicalId"
            Description
            IONReceiver.ScanFreq
                label is "ScanFrequency_(Minutes)"
            IONReceiver.FromTime
            IONReceiver.ToTime
            StartupType
        visible when (IONReceiver.RcvrType.AppBOD)
            header2 of "BODTypeOptions"
            single column
                IONReceiver.BODType
                    label is "BODType"
                PfiFlowDefinition
                IONReceiver.NewProcMode
                IONReceiver.SeqMethod
                IONReceiver.NumWuRestarts
                IONReceiver.WuRestartWait
                IONReceiver.NumRescans
                IONReceiver.SkipOld
                IONReceiver.EnforceBatchId
        visible when (IONReceiver.RcvrType.BODGroup)
            header2 of "BODGroupOptions"
            single column
                IONReceiver.BODGroup
                IONReceiver.NewProcMode
        visible when (IONReceiver.RcvrType.IONPulse)
            header2 of "IONPulseOptions"
            single column
                IONReceiver.PulseType
        header2 of "Status"
        single column
            IONReceiver.LastScanTime
            LastMessageReceivedTime
            IONReceiver.LastProcessedRecordsCount
            Status
                display only
            LastErrorDate
                display only
            LastErrorType
                display only
            LastError
                display only
                use text area of 10 lines
        two column
            IONReceiver.IOBOXRecordProcessed
                label is "IOBOXRecordFlushed"
                display only
            IONReceiver.IMSRecordProcessed
                label is "IMSRecordFlushed"
                display only
