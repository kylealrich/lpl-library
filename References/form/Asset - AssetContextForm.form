AssetContextForm is a Form
    restrict action IncludeInMassSelection
    restrict action IncludeInMassSelectAll
    restrict action ExcludeFromMassSelectAll
    restrict action LoadToTrueCostAssetManagementInterface
    restrict action FullDispose
    Layout
        visible when (RecordExists)
            display as text
                five column distributed
                    column1
                        Picture.File
                            display as portrait image
                                missing image is random background
                                    foreground text is "<XiAssetDescriptionAbbreviation>"
                    column2
                        Company.AssetCompanyAndName
                            label is "AssetCompany"
                        CompanyAsset
                    column3
                        TagNumber
                        AssetCategory
                            label is "Category"
                    column4
                        DerivedStatus
                            label is "Status"
                            display as tag
                                color of yellow when (Status.Unreleased)
                                color of yellow when (Status.PostRelease)
                                color of green when (Status.Released)
                    column5
                        visible when (LeasedAsset)
                            AssetLease.LeaseCompany
                                label is "LeaseCompany"
                            paragraph
                                LeasedAssetID
                                    label is "Lease"
                                button of icon.launch
                                    link is LeaseNav
                            DerivedLeaseStatus
                                label is "LeaseStatus"
        paragraph
            button of "Transfer"
                visible when (TransferAllowed)
                form invoke is CreateUnreleasedAssetTransfer
            button of "Impair"
                visible when (AllowImpairment)
                form invoke is CreateUnreleasedAssetImpairment
            button of "RetirementObligation"
                visible when (AllowRetirementObligation)
                form invoke is CreateUnreleasedRetirementObligation
            button of "Dispose"
                visible when (DisposalAllowed)
                form invoke is CreateUnreleasedAssetDisposal
            button of "Reinstate"
                visible when (Status.Disposed)
                form invoke is CreateAssetReinstatement
            button of "Revalue"
                visible when (AllowRevaluation)
                form invoke is CreateAssetBookRevaluation
            button of "Release"
                visible when (ApprovalUnreleasedAndNeedsRelease)
                action is Unreleased.Release
            button of "Release"
                visible when (ApprovalPostReleaseAndNeedsRelease)
                action is PostRelease.Release
            button of "ReleaseDisposal"
                visible when (ApprovalFullPostReleaseBookDisposal)
                action is PostRelease.InvokeAssetReleaseDisposal
            button of "ReleaseDisposal"
                visible when (ApprovalFullPostReleaseDisposal)
                action is PostRelease.ReleaseDisposal
            button of "ReleaseReinstatement"
                visible when (ApprovalReleaseReinstatementValid)
                action is PostRelease.ReleaseReinstatement
            button of "ReleaseImpairment"
                visible when (ApprovalAllowAssetImpairmentRelease)
                action is PostRelease.ReleaseImpairment
            button of "Release"
                visible when (ApprovalAllowRetirementObligationRelease)
                action is PostRelease.ReleaseRetirementObligation
            button of "ReleaseRevalue"
                visible when (ApprovalRevalueReleaseValid)
                action is PostRelease.ReleaseRevalue
            button of "ResetRevalue"
                visible when (ApprovalRevalueInProgress)
                action is PostRelease.ResetRevalue
            button of "ResetAdjustment"
                visible when (ApprovalUnreleasedAssetAdjustmentExists)
                action is PostRelease.ResetAdjustment
            button of "ResetTransfer"
                visible when (ApprovalUnreleasedAssetTransferExists)
                action is PostRelease.ResetTransfer
            button of "ResetDisposal"
                visible when (ApprovalResetDisposalIsValid)
                action is PostRelease.ResetDisposal
            button of "ResetReinstatement"
                visible when (ApprovalUnreleasedAssetReinstatementsExists)
                action is PostRelease.ResetReinstatement
            button of "ResetImpairment"
                visible when (ApprovalAllowAssetImpairmentReset)
                action is PostRelease.ResetImpairment
            button of "ResetObligation"
                visible when (ApprovalAllowRetirementObligationReset)
                action is PostRelease.ResetRetirementObligation
        blank line
