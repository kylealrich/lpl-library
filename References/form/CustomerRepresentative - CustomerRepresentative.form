CustomerRepresentative is a Form
    title is "CustomerRepresentative"
    Layout
        single column
            DunAndBradstreetNumber
                label is "Dun&Bradstreet"
        paragraph
            TaxIdGroup.TaxIdType
            TaxIdGroup.TaxId
        single column
            Active
                display only
        header5 of "RelatedCompanyCustomer"
        paragraph
            ReceivableCompany
            ReceivableCompany.Name
                no label
                display as text
        paragraph
            Customer
                select is CustomerContextCompanyCustomerSelectList
            Customer.Name
                no label
                display as text
        paragraph
            AllowPortalApplyCashAcrossReceivableCompanies
        header5 of "MailingAddress"
        MailingAddress
            form is PostalAddressMinimum
