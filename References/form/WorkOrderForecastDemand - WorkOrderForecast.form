WorkOrderForecast is a Form
    is primary
    Layout
        visible when (not RecordExists)
            two column distributed
                column1
                    paragraph
                        Company
                            select is CompaniesWorkOrderInUse
                        Company.Name
                            no label
                            display as text
                    paragraph
                        InventoryLocation
                            label is "Location"
                        InventoryLocation.Name
                            no label
                            display as text
                column2
                    paragraph
                        WorkOrderForecastDemand.ExpectedDeliveryDate
                            label is "ExpectedDeliveryDate"
                    paragraph
                        WorkOrderForecastDemand.Item
                            label is "Item"
                        WorkOrderForecastDemand.Item.Description
                            no label
                            display as text
                        WorkOrderForecastDemand.Item.StockUOM
                            display as text
        visible when (RecordExists)
            display as text
                two column distributed
                    column1
                        Company.RepresentativeText
                        InventoryLocation.RepresentativeText
                            label is "Location"
                    column2
                        WorkOrderForecastDemand.ExpectedDeliveryDate
                        paragraph
                            WorkOrderForecastDemand.Item.RepresentativeText
                            WorkOrderForecastDemand.Item.StockUOM
        header2 of "_"
        two column
            Quantity
            Status
                display as text
