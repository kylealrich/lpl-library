BankStatementPositionForm is a CompositeForm
    title is "CashPositionWorksheet"
    context form is BankStatementPositionContextForm
        background is theme color
    restrict action DeleteOpenReconciliationTransactions
    restrict action Unreconciled.DeleteStatementReconciliationDetails
    restrict action Unreconciled.ReclassifyAllStatementLines
    restrict action SwitchToCombinedListView
    restrict action SwitchToListOverListView
    restrict action UpdateCashCodeCashPosition
    restrict action MassLoadAndReconcile
    restrict action Purge
    Actions
        action is FinalizeCashPosition
            label is "FinalizeWorksheet"
            hide when invalid
        action is ReopenCashPosition
            label is "ReopenWorksheet"
            hide when invalid
        action is EmailCashPositionSummary
            label is "EmailSummary"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is refresh
            label is "_"
    Details is a Panel
        list is BankStatementPosition set.BankStatementPositionWorkSheetList
            helper list is CashTransactionCategoryRel.CashTransactionCategoryPositionHelper
                action is CreatePositionCategory
                    invoked.PrmCashManagementGroup = CashManagementGroup
                    invoked.PrmCashManagementAccount = CashManagementAccount
                    invoked.PrmBankStatement = BankStatement
