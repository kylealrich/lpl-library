CustomerOrders is a CompositeForm
    title is "<DerivedOrdersFormTitle>"
    disable field options
    called out actions only
    context form is ActivityContextForm
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action InactivateContact
    restrict action EmailToCustomerContacts
    restrict action CustomerUpdateRequest
    restrict action UpdateMyContactInformation
    restrict action SelectPaymentMethod
    restrict action UnwindDeclinedPaymentRequest
    restrict action SendEmailForExternalUserMigrationUsernameChange
    Actions
        action is refresh
            label is "_"
    NationalOpenOrders is a Panel
        title is "OpenOrders"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountCustomerOpenOrderRel.PortalCustomerOpenOrderList
    CustomerOpenOrders is a Panel
        title is "OpenOrders"
        visible when (IsActiveInvoiceCustomer)
        list is InvoiceCustomerOpenOrderRel.PortalCustomerOpenOrderList
    NationalCompletedOrders is a Panel
        title is "CompletedOrders"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountCustomerCompletedOrderRel.PortalCustomerCompletedOrderList
    CustomerCompletedOrders is a Panel
        title is "CompletedOrders"
        visible when (IsActiveInvoiceCustomer)
        list is InvoiceCustomerCompletedOrderRel.PortalCustomerCompletedOrderList
