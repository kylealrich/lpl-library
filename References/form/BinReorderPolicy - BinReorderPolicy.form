BinReorderPolicy is a Form
    is primary
    Layout
        visible when (RecordExists)
            three column distributed
                column1
                    Company.DerivedCompanyDisplay
                        label is "Company"
                        display as text
                    Bin
                        display as text
                        show up to 15 characters
                column2
                    InventoryLocation.RepresentativeText
                        display as text
                    UnitOfMeasure
                        display as text
                        show up to 15 characters
                column3
                    Item.RepresentativeText
                        display as text
                    visible when (DisplayReplFromBinForWarehouseLocation)
                        ReplenishFromBin
                            select is DistributionManagementReplenishFromBinSelectionList
                            show up to 15 characters
                            when value changed
                                refresh SystemDeterminedBin
                    visible when (DisplayReplFromBin)
                        ReplenishFromBin
                            show up to 15 characters
                            when value changed
                                refresh SystemDeterminedBin
                    paragraph
                        SystemDeterminedBin
                            when value changed
                                refresh ReplenishFromBin
                                refresh DisplayReplFromBinForWarehouseLocation
                                refresh DisplayReplFromBin
        visible when (not RecordExists)
            three column distributed
                column1
                    paragraph
                        Company
                            show up to 15 characters
                        Company.Name
                            no label
                            display as text
                    visible when (InventoryLocation.UseAsWarehouseLocation)
                        Bin
                            select is DistributionManagementBinSelectionList
                            show up to 15 characters
                    visible when (not InventoryLocation.UseAsWarehouseLocation)
                        Bin
                            show up to 15 characters
                column2
                    paragraph
                        InventoryLocation
                            label is "Location"
                            show up to 15 characters
                        InventoryLocation.Name
                            no label
                            display as text
                    UnitOfMeasure
                        show up to 15 characters
                column3
                    paragraph
                        Item
                            show up to 15 characters
                        Item.Description
                            no label
                            display as text
                    visible when (DisplayReplFromBinForWarehouseLocation)
                        ReplenishFromBin
                            select is DistributionManagementReplenishFromBinSelectionList
                            show up to 15 characters
                            when value changed
                                refresh SystemDeterminedBin
                    visible when (DisplayReplFromBin)
                        ReplenishFromBin
                            show up to 15 characters
                            when value changed
                                refresh SystemDeterminedBin
                    paragraph
                        SystemDeterminedBin
                            when value changed
                                refresh ReplenishFromBin
                                refresh DisplayReplFromBinForWarehouseLocation
                                refresh DisplayReplFromBin
        three column distributed
            column1
                ReorderPolicy
                ReorderPoint
                    show up to 20 characters
                OrderMultiple
                    show up to 20 characters
            column2
                ReorderPointCode
                ReorderQuantity
                    show up to 20 characters
                MaximumOrderQuantity
                    show up to 20 characters
            column3
                ReorderQuantityCode
        visible when (InventoryLocation.UseAsWarehouseLocation)
            header2 of "Warehouse_Storage_Information"
            display as text
                two column distributed
                    column1
                        text of "From"
                            header4
                            bold
                        ReplenishFromBin.WarehouseStorageLocation.WarehouseStorageLocationIDName
                            label is "Storage_Location"
                        paragraph
                            ReplenishFromBin.WarehouseStorageLocation.DerivedWarehouseZoneAndDescription
                            ReplenishFromBin.WarehouseStorageLocation.DerivedZoneComponentAisle
                            ReplenishFromBin.WarehouseStorageLocation.DerivedWarehouseZoneComponentAndDescription
                            ReplenishFromBin.WarehouseStorageLocation.DerivedWarehouseZoneComponentTypeAndDescription
                            ReplenishFromBin.WarehouseStorageLocation.Row
                    column2
                        text of "To"
                            header4
                            bold
                        Bin.WarehouseStorageLocation.WarehouseStorageLocationIDName
                            label is "Storage_Location"
                        paragraph
                            Bin.WarehouseStorageLocation.DerivedWarehouseZoneAndDescription
                            Bin.WarehouseStorageLocation.DerivedZoneComponentAisle
                            Bin.WarehouseStorageLocation.DerivedWarehouseZoneComponentAndDescription
                            Bin.WarehouseStorageLocation.DerivedWarehouseZoneComponentTypeAndDescription
                            Bin.WarehouseStorageLocation.Row
