ZoneDetailForm is a Form
    title is "ZoneBalance"
    Layout
        single column
            visible when (EntityZoneBalancing)
                GLZoneBalance.ZoneAccountingUnit
            visible when (Dim1ZoneBalancing)
                GLZoneBalance.ZoneFinanceDimension
            GLZoneBalance.ZoneAccount
        blank line
        three column
            text of "Debit"
            text of "Credit"
            text of "Currency"
        two column
            ZoneAmount.TransactionAmount
                label is "TransactionAmount"
                display only
            GLZoneBalance.Currency
                no label
                display only
        two column
            ZoneAmount.FunctionalAmount
                label is "FunctionalAmount"
                display only
            AccountingEntity.FunctionalCurrency
                no label
                display only
        visible when (AlternateCurrencyExists)
            two column
                ZoneAmount.AlternateAmount
                    label is "AlternateAmount"
                    display only
                AccountingEntity.AlternateCurrency
                    no label
                    display only
        visible when (AlternateCurrency2Exists)
            two column
                ZoneAmount.AlternateAmount2
                    label is "AlternateAmount2"
                    display only
                AccountingEntity.AlternateCurrency2
                    no label
                    display only
        visible when (AlternateCurrency3Exists)
            two column
                ZoneAmount.AlternateAmount3
                    label is "AlternateAmount3"
                    display only
                AccountingEntity.AlternateCurrency3
                    no label
                    display only
        visible when (ReportCurrencyOneExists)
            two column
                ZoneAmount.ReportAmount1
                    label is "<FinanceEnterpriseGroup.ReportOne>"
                    display only
                FinanceEnterpriseGroup.ReportCurrencyOne
                    no label
                    display only
        visible when (ReportCurrencyTwoExists)
            two column
                ZoneAmount.ReportAmount2
                    label is "<FinanceEnterpriseGroup.ReportTwo>"
                    display only
                FinanceEnterpriseGroup.ReportCurrencyTwo
                    no label
                    display only
        visible when (ReportCurrencyThreeExists)
            two column
                ZoneAmount.ReportAmount3
                    label is "<FinanceEnterpriseGroup.ReportThree>"
                    display only
                FinanceEnterpriseGroup.ReportCurrencyThree
                    no label
                    display only
        visible when (ReportCurrencyFourExists)
            two column
                ZoneAmount.ReportAmount4
                    label is "<FinanceEnterpriseGroup.ReportFour>"
                    display only
                FinanceEnterpriseGroup.ReportCurrencyFour
                    no label
                    display only
        visible when (ReportCurrencyFiveExists)
            two column
                ZoneAmount.ReportAmount5
