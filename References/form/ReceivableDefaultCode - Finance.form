Finance is a Form
    Layout
        single column
        two column
            column1
                paragraph
                    LatePaymentAndFinanceCharges
                        label is "ChargeType"
                paragraph
                    FinanceChargeCode
                        label is "RateCode"
                        select is FinanceCodes
                    FinanceChargeCode.Description
                        no label
                        display as text
                    FinanceChargeCycle
                        label is "CycleCode"
                        select is FinanceCycle
                paragraph
                    FinanceChargeDueDateGraceDays
                        label is "GraceDays"
                paragraph
                    PrintFinanceChargeDocument
                        label is "PrintNotice"
            column2
                paragraph
                    FinanceChargeCalculationMethod
                        label is "CalculationMethod"
                paragraph
                    InvoiceMinimumFinanceCharge
                        label is "InvoiceMinimum"
                paragraph
                    MinimumFinanceChargeAmount
                        label is "CustomerMinimum"
                paragraph
                    ChargeMinimumFinanceCharge
                        label is "ChargeCustomerMinimum"
