FinanceResourceScheduleForm is a Form
    is primary
    title is "ScheduleDetails"
    Actions
        action is Start
            hide when invalid
            valid when (AllowStart)
        action is MarkComplete
            label is "Complete"
            hide when invalid
        action is Reschedule
            hide when invalid
        action is Delete
            hide when invalid
        navigation is DisplayTask
            label is "View"
            hide when invalid
            valid when (ClosePeriodTaskAssignment)
        navigation is DisplayResource
            label is "View"
            hide when invalid
            valid when (ReminderAboutAResource)
    Layout
        header3 of "<MessageType>"
        blank line
        single column
            visible when (CreatedBy.WorkRequest)
                WorkRequestedBy.PreferredSimplePresentationName
                    label is "RequestedBy"
                    display as text
            WorkStatus
                label is "Status"
                display as text
            BeginDate
                label is "BeginDate"
                display as text
            DueDate
                label is "DueDate"
                display as text
                raise red alert when (RaiseRedAlert)
                    mouse over text is "<RedAlertMessage>"
                raise yellow alert when (RaiseYellowAlert)
                    mouse over text is "<YellowAlertMessage>"
                raise green alert when (DueToday)
                    mouse over text is "DueToday"
        blank line
        single column
            Notes
                display as text
        blank line
        blank line
        visible when (HasAdditionalInfo)
            header3 of "AdditionalInformationFoundHere"
            blank line
        visible when (HasAttachment)
            paragraph
                AttachmentLabel
                    no label
                    display as text
                button of "<Attachment.Title>"
                    view Attachment.File
                    display as link
        visible when (HasUrl)
            paragraph
                WebsiteLinkLabel
                    no label
                    display as text
                button of "<WebsiteLink>"
                    link is external "<WebsiteLink>"
                    display as link
