MobileBankStatementLineContextForm is a Form
    title is "BankStatementLine"
    Layout
        two column distributed
            column1
                BankStatement
                    label is "StatementNumber"
                    display as text
                CashManagementAccount
                    display as text
                DerivedLineNumber
                    display as text
                DebitCreditIndicator
                    display as text
                paragraph
                    visible when (DistributionsOutOfBalance)
                        LineDistributionAmount
                            label is "TotalDistributionAmount"
                            display as text
                        OutOfBalanceAmount
                            display as text
            column2
                StatementDate
                    display as text
                CashManagementAccount.Title
                    display as text
                LineAmount
                    display as text
                LineStatus
                    display as text
        blank line
        paragraph
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditFailure)
                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                    bold
                    color of red
