ReplaceAndInactivate is an ActionForm
    action is ReplaceAndInactivate
    Layout
        single column
            ReplaceWithNewOrExistingItem
                label is "ReplaceVendorItemWith"
        visible when (ReplaceWithNewOrExistingItem.New)
            display as text
                two column
                    Item.RepresentativeText
                    PrmProcurementGroup.RepresentativeText
                two column
                    RepresentativeText
                    Vendor.RepresentativeText
            two column
                PrmReplacementVendorItem
                    label is "ReplacementVendorItem"
                PrmReplacementVendorItemDescription
                    label is "VendorItemDescription"
            single column
                blank line
                text of "UnlessReplacementValuesAreEntered,ManufacturerInformationWillDefaultToTheValuesBelow"
                    italics
            two column
                Manufacturer
                    label is "ManufacturerCode/Division"
                    display as text
                    compact format
                ManufacturerNumber
                    display as text
            two column
                PrmReplacementManufacturer
                    label is "ReplacementManufacturerCode/Division"
                    compact format
                PrmReplacementManufacturerNumber
                    label is "ReplacementManufacturerNumber"
            paragraph
                PrmBuyUnitOfMeasure.UnitOfMeasure
                    label is "BuyU\\O\\M"
                    select is ValidBuyUnitsOfMeasure
                PrmPriceUnitOfMeasure.UnitOfMeasure
                    label is "PriceU\\O\\M"
                    select is ValidBuyUnitsOfMeasure
            text of "UpdateManufacturerInformationOn:"
            single column
                PrmUpdateManufacturerNumberOnItem
                    label is "ItemAndItemLocations"
            visible when (GTINsExist)
                single column
                    PrmUpdateManufacturerNumberOnGTIN
                        label is "GTIN"
        visible when (ReplaceWithNewOrExistingItem.Existing)
            display as text
                two column
                    Item.RepresentativeText
                    PrmProcurementGroup.RepresentativeText
                two column
                    RepresentativeText
                    Vendor.RepresentativeText
            paragraph
                PrmReplacementVendorItem
                    label is "ReplacementVendorItem"
                    select is VendorItemsForReplaceAndInactivate
                PrmReplacementVendorItem.VendorItemDescription
                    no label
                    display as text
        visible when (ReplaceWithNewOrExistingItem.NewItem)
            display as text
                two column
                    Item.RepresentativeText
                    PrmProcurementGroup.RepresentativeText
                two column
                    RepresentativeText
                    Vendor.RepresentativeText
            paragraph
                PrmReplacementItem
                    label is "NewItemForVendorItem"
                PrmReplacementItemRel.Description
                    no label
                    display as text
                PrmUseManufacturerFromItem
                    label is "UseManufacturerInformationFromItem"
            paragraph
                PrmBuyUnitOfMeasure.UnitOfMeasure
                    label is "BuyU\\O\\M"
                    select is ValidBuyUnitsOfMeasure
                PrmPriceUnitOfMeasure.UnitOfMeasure
                    label is "PriceU\\O\\M"
                    select is ValidBuyUnitsOfMeasure
            paragraph
                PrmInactivateItem
                visible when (PrmInactivateItem)
                    PrmMakeItemNotAvailableForUse
