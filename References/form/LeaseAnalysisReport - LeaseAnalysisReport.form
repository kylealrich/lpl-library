LeaseAnalysisReport is an ActionForm
    action is LeaseAnalysisReport
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
            visible when (LeaseCompanyGroup.Lease)
                paragraph
                    Company
                        select is PayablesCompanyList
                    Company.Name
                        no label
                        display as text
                paragraph
                    Lease
                        select is AllLeases
                    Lease.Description
                        no label
                        display as text
            visible when (LeaseCompanyGroup.CompanyGroup)
                paragraph
                    CompanyGroup
                        label is "CompanyGroup"
                        select is CompanyGroupsInFinanceEnterpriseGroup
                    CompanyGroup.Description
                        no label
                        display as text
        paragraph
            LeaseClass
                label is "LeaseClassification"
            LeaseType
                select is LeaseTypes
            LeaseType.Description
                no label
                display as text
        blank line
        paragraph
            Year
                label is "Year"
            Period
                label is "Period"
        paragraph
            ReportOption
        blank line
        paragraph
            IncludeExec
                label is "IncludeExecutoryCosts"
        paragraph
            Sort
        paragraph
            Currency
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                LeaseAnalysisReportReport_RDG
            column2 of 25%
                LeaseAnalysisReportReport_XPT
