ReconciliationAccountMain is a Form
    title is "Main"
    Layout
        header2 of "ReconciliationOptions"
        visible when (IsConsolidatedGroupStandaloneNonAccountOrAccountWithinIndependentGroup)
            single column
                Description
                    show up to 100 characters
                Purpose
                    use text area of 3 lines
        visible when (IsConsolidatedGroupOrStandalone)
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                    Priority
                    paragraph
                        ReconciliationAccountGroup
                            select is ReconciliationAccountGroupNoChildren
                        ReconciliationAccountGroup.Description
                            no label
                            display as text
                        visible when (DisplayParentReportGroupStructure)
                            text of "(<ParentReportGroupStructure>)"
                                italics
                    paragraph
                        FinanceTeam
                        FinanceTeam.Description
                            no label
                            display as text
                    RequireSupportingDoco
                        label is "RequiresSupportingDocumentation"
                    paragraph
                        ReconciliationPolicy
                            raise blue alert when (DisplayRequireSupportingDocoWarning)
                                mouse over text is "SupportingDocumentationWillNotBeRequiredIfTheAccountIsAutoReconciled"
                        ReconciliationPolicy.Description
                            no label
                            display as text
                column2
                    paragraph
                        ReconciliationAccountType
                        visible when (ReconciliationAccountType.Cash)
                            visible when (LevelType.Account)
                                CashManagementAccount
                                    label is "CashAccount"
                    Risk
                    paragraph
                        CloseTask
                            label is "CloseTask"
                            select is TaskSelect
                        CloseTask.TaskName
                            no label
                            display as text
                    paragraph
                        AssignedResource
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    select is ApprovalCodesWithLevels
                    Active
        visible when (LevelType.NonAccount)
            paragraph
                CloseConfiguration
                CloseConfiguration.Description
                    no label
                    display as text
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                    Priority
                    paragraph
                        FinanceTeam
                        FinanceTeam.Description
                            no label
                            display as text
                    RequireSupportingDoco
                        label is "RequiresSupportingDocumentation"
                column2
                    paragraph
                        CloseTask
                            label is "CloseTask"
                            select is TaskSelect
                        CloseTask.TaskName
                            no label
                            display as text
                    Risk
                    paragraph
                        AssignedResource
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    select is ApprovalCodesWithLevels
                    Active
        visible when (IsIndependentGroup)
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                    paragraph
                        FinanceTeam
                        FinanceTeam.Description
                            no label
                            display as text
                column2
                    paragraph
                        RequiresApproval
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    select is ApprovalCodesWithLevels
                    paragraph
                        AssignedResource
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
        visible when (IsAccountWithinConsolidatedGroup)
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                            display as text
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                                display as text
                    Priority
                        display as text
                    paragraph
                        ReconciliationAccountGroup
                            display as text
                            select is ReconciliationAccountGroupNoChildren
                        ReconciliationAccountGroup.Description
                            no label
                            display as text
                        visible when (DisplayParentReportGroupStructure)
                            text of "(<ParentReportGroupStructure>)"
                                italics
                    paragraph
                        FinanceTeam
                            display as text
                        FinanceTeam.Description
                            no label
                            display as text
                    RequireSupportingDoco
                        label is "RequiresSupportingDocumentation"
                        display as text
                    paragraph
                        ReconciliationPolicy
                            display as text
                        ReconciliationPolicy.Description
                            no label
                            display as text
                column2
                    paragraph
                        ReconciliationAccountType
                            display as text
                        visible when (ReconciliationAccountType.Cash)
                            visible when (LevelType.Account)
                                CashManagementAccount
                                    label is "CashAccount"
                    Risk
                        display as text
                    paragraph
                        CloseTask
                            label is "CloseTask"
                            display as text
                        CloseTask.TaskName
                            no label
                            display as text
                    paragraph
                        AssignedResource
                            display as text
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
                    paragraph
                        RequiresApproval
                            display as text
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    display as text
                                    select is ApprovalCodesWithLevels
                    Active
                        display as text
        visible when (IsAccountWithinIndependentGroup)
            two column distributed
                column1
                    paragraph
                        ReconcileFrequency
                            display as text
                        visible when (ReconcileFrequency.Quarterly)
                            PeriodWithinQuarter
                                display as text
                    Priority
                    paragraph
                        ReconciliationAccountGroup
                            select is ReconciliationAccountGroupNoChildren
                        ReconciliationAccountGroup.Description
                            no label
                            display as text
                        visible when (DisplayParentReportGroupStructure)
                            text of "(<ParentReportGroupStructure>)"
                                italics
                    paragraph
                        FinanceTeam
                            display as text
                        FinanceTeam.Description
                            no label
                            display as text
                    RequireSupportingDoco
                        label is "RequiresSupportingDocumentation"
                    paragraph
                        ReconciliationPolicy
                            raise blue alert when (DisplayRequireSupportingDocoWarning)
                                mouse over text is "SupportingDocumentationWillNotBeRequiredIfTheAccountIsAutoReconciled"
                        ReconciliationPolicy.Description
                            no label
                            display as text
                column2
                    paragraph
                        ReconciliationAccountType
                        visible when (ReconciliationAccountType.Cash)
                            visible when (LevelType.Account)
                                CashManagementAccount
                                    label is "CashAccount"
                    Risk
                    paragraph
                        CloseTask
                            label is "CloseTask"
                            select is TaskSelect
                        CloseTask.TaskName
                            no label
                            display as text
                    paragraph
                        AssignedResource
                            display as text
                            compact format
                        AssignedResource.PreferredPresentationName
                            no label
                            display as text
                        button of "<AssignedResource.EmailAddress>"
                            link is "mailto:<AssignedResource.EmailAddress>"
                            display as link
                    paragraph
                        RequiresApproval
                            display as text
                        visible when (RequiresApproval)
                            paragraph
                                ApprovalCode
                                    display as text
                                    select is ApprovalCodesWithLevels
                    Active
        visible when (not LevelType.Group)
            header2 of "DetailTransactionReconciliationOptions"
            two column distributed
                column1
                    DetailReconciliationMethod
                column2
                    visible when (DetailReconciliationMethod.UseDetailReconciliationMatchRules)
                        paragraph
                            DetailReconciliationMatchRuleGroup
                                raise yellow alert when (DisplayMatchRuleGroupWarning)
                                    mouse over text is "TheDetailReconciliationMatchRuleGroupIsDefinedAs<DetailReconciliationMatchRuleGroup.MatchRuleType>,HoweverTheLoadInterfaceTransactionsAndLoadGlobalLedgerTransactionsValuesDoNotMatch"
                            DetailReconciliationMatchRuleGroup.Description
                                no label
                                display as text
            visible when (DetailReconciliationMethod entered)
                two column distributed
                    column1
                        LoadInterfaceTransactions
                    column2
                        visible when (not LevelType.NonAccount)
                            paragraph
                                LoadGeneralLedgerTransactions
                                visible when (LoadGeneralLedgerTransactions)
                                    GeneralLedgerTransactionLevel
                                        label is "TransactionLevel"
                two column distributed
                    column1
                        DetailReconciliationCurrency
                    column2
                        visible when (not LevelType.NonAccount)
                            DetailReconciliationSign
                        visible when (LevelType.NonAccount)
                            DetailReconciliationSign
                                display as text
