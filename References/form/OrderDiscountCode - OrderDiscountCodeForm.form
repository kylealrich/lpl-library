OrderDiscountCodeForm is a Form
    is primary
    title is "OrderDiscountCode"
    Layout
        three column distributed
            column1
                paragraph
                    visible when (RecordExists)
                        Company.RepresentativeText
                            display as text
            column2
                paragraph
                    visible when (RecordExists)
                        OrderDiscountCode
                            label is "Code"
                            display as text
                        Description
                            label is "Description"
                            show up to 25 characters
            column1
                paragraph
                    visible when (not RecordExists)
                        Company
                            select is Companies
                        Company.Name
                            no label
                            display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        OrderDiscountCode
                            label is "Code"
                        Description
                            label is "Description"
                            show up to 25 characters
            column3
                paragraph
                    Currency
                        label is "Currency"
        paragraph
            DistributionAccount
                label is "GlobalLedgerAccount"
                compact format
        header2 of "TotalOrderValueBreaks"
        text of " "
        two column
            column1
                DollarLimits.DollarLimit[1]
                    no label
                DollarLimits.DollarLimit[2]
                    no label
