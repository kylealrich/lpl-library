RSSLPLMarkAsFavorite is an ActionForm
    action is RSSLPLMarkAsFavorite
    submit label is "Ok"
    title is "AddItem_to_aFavoriteList"
    Layout
        paragraph
            PrmAddToFavoriteList
                no label
                display as horizontal radio buttons
        visible when (PrmAddToFavoriteList.AddToExistingFavoriteList)
            paragraph
                PrmProcurementTemplate
                    label is "YourFavoriteList"
                    select is RSSLPLFavoriteTemplateList
        visible when (PrmAddToFavoriteList.AddToANewFavoriteList)
            single column
                PrmNewProcurementTemplate
                    label is "Shopping_List_Name"
                    display as required
                PrmDescription
                    label is "Shopping_List_Description"
                    display as required
