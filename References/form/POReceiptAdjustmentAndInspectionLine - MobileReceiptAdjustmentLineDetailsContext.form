MobileReceiptAdjustmentLineDetailsContext is a Form
    title is "AdjustmentLineDetails"
    Layout
        display as text
            visible when (LineExists)
                paragraph distributed
                    PurchaseOrderReceipt
                        label is "Receiver"
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.LineNumber
                        label is "Line"
                    PurchaseOrderReceiptLine.Item
                    PurchaseOrderReceiptLine.PurchaseOrderLine.VendorItem
                single column
                    PurchaseOrderReceiptLine.EnteredReceivedQuantity
                        label is "CurrentReceivedQuantity"
                        display as text
            visible when (not LineExists)
                paragraph distributed
                    ReceiptLinesForTemplateRel.PurchaseOrderReceipt
                        label is "Receiver"
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.LineNumber
                        label is "Line"
                    ReceiptLinesForTemplateRel.Item
                    ReceiptLinesForTemplateRel.PurchaseOrderLine.VendorItem
                single column
                    ReceiptLinesForTemplateRel.EnteredReceivedQuantity
                        label is "CurrentReceivedQuantity"
                        display as text
