PerformanceCriteria is a Form
    is primary
    title is "PerformanceCriteria"
    Layout
        single column
            SupplierPerformanceCriteria.Criteria
                display as text
            visible when (HasDescription)
                SupplierPerformanceCriteria.Description
                    display as text
            SupplierPerformanceCriteriaOption
                no label
                display as radio buttons
            visible when (DoesNotMeetExpectationsAttachmentRequiredMessage)
                text of "AttachmentIsRequiredIf_Does_Not_Meet_ExpectationsIsSelected"
                    color of green
            visible when (DoesNotMeetExpectationsCommentRequiredMessage)
                text of "CommentsAreRequiredIf_Does_Not_Meet_ExpectationsIsSelected"
                    color of green
            visible when (DoesNotMeetExpectationsAttachmentAndCommentRequiredMessage)
                text of "AttachmentsAndCommentsAreRequiredIf_Does_Not_Meet_ExpectationsIsSelected"
                    color of green
            visible when (BelowExpectationsAttachmentRequiredMessage)
                text of "AttachmentIsRequiredIf_Below_ExpectationsIsSelected"
                    color of green
            visible when (BelowExpectationsCommentRequiredMessage)
                text of "CommentsAreRequiredIf_Below_ExpectationsIsSelected"
                    color of green
            visible when (BelowExpectationsAttachmentAndCommentRequiredMessage)
                text of "AttachmentsAndCommentsAreRequiredIf_Below_ExpectationsIsSelected"
                    color of green
            visible when (MeetsExpectationsAttachmentRequiredMessage)
                text of "AttachmentIsRequiredIf_Meets_ExpectationsIsSelected"
                    color of green
            visible when (MeetsExpectationsCommentRequiredMessage)
                text of "CommentsAreRequiredIf_Meets_ExpectationsIsSelected"
                    color of green
            visible when (MeetsExpectationsAttachmentAndCommentRequiredMessage)
                text of "AttachmentsAndCommentsAreRequiredIf_Meets_ExpectationsIsSelected"
                    color of green
            visible when (AboveExpectationsAttachmentRequiredMessage)
                text of "AttachmentIsRequiredIf_Above_ExpectationsIsSelected"
                    color of green
            visible when (AboveExpectationsCommentRequiredMessage)
                text of "CommentsAreRequiredIf_Above_ExpectationsIsSelected"
                    color of green
            visible when (AboveExpectationsAttachmentAndCommentRequiredMessage)
                text of "AttachmentsAndCommentsAreRequiredIf_Above_ExpectationsIsSelected"
                    color of green
            visible when (ExceedsExpectationsAttachmentRequiredMessage)
                text of "AttachmentIsRequiredIf_Exceeds_ExpectationsIsSelected"
                    color of green
            visible when (ExceedsExpectationsCommentRequiredMessage)
                text of "CommentsAreRequiredIf_Exceeds_ExpectationsIsSelected"
                    color of green
            visible when (ExceedsExpectationsAttachmentAndCommentRequiredMessage)
                text of "AttachmentsAndCommentsAreRequiredIf_Exceeds_ExpectationsIsSelected"
                    color of green
            Comments
                use text area of 2 lines
            DisplayCommentsToSupplier
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        single column
            DisplayAttachmentToSupplier
