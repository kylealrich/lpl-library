PayablesInvoiceAddOnCharge is a Form
    is primary
    title is "AddOnCharge"
    Layout
        header2 of "InvoiceInformation"
        display as text
            three column distributed
                column1
                    PayablesInvoice.DerivedCompanyNameID
                        label is "Company"
                    PayablesInvoice.DerivedVendorNameID
                    PayablesInvoice.Invoice
                column2
                    PayablesInvoice.Status
                    PayablesInvoice.InvoiceDate
                    PayablesInvoice.VoucherNumberDisplay
                column3
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    PayablesInvoice.DueDate
                    visible when (PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.ProcessingTeam
                    visible when (not PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.APClerk.PreferredSimplePresentationName
                            label is "Processor"
                    button of "ViewImage"
                        visible when (PayablesInvoice.InvoiceImageEntered)
                        view PayablesInvoice.PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
        header2 of "ChargeOrAllowanceInformation"
        paragraph
            PurchaseOrder
                display as text
            PurchaseOrderLine.LineNumber
                label is "POLineNumber"
                display as text
            first PayablesInvoiceDetailsRel.PayablesInvoiceDetail
                label is "InvoiceLineNumber"
                display as text
        paragraph
            AddOnCharge
                label is "Code"
                select is ActiveAddOnCostCodes
            AddOnCharge.Description
                no label
                display as text
            AddOnCharge.TrackType
                label is "Type"
                display as text
        paragraph
            EnteredQuantity
                label is "InvoiceQuantity"
                display as text
            EnteredUnitCost
                label is "InvoiceAOCAmount"
            TotalDistributionAmount
                label is "TotalAmount"
                display as text
        header2 of "TaxInformation"
        paragraph
            TaxCode
            ProductTaxCategory
            EntityTaxCodeRel.AccruedOrInvoiced
                label is "TaxType"
            TaxAmount
                display as text
            visible when (TaxOverridden)
                PayablesInvoiceAddOnChargeTaxRel.CalculatedTaxAmount
                    display as text
