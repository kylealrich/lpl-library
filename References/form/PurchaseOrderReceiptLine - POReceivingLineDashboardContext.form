POReceivingLineDashboardContext is a Form
    Layout
        display as text
            four column distributed
                column1
                    visible when (Item.UseLinkedImage)
                        Item.ImageURL
                            display as image
                    visible when (not Item.UseLinkedImage)
                        Item.Picture.File
                            display as full image up to 5 lines
                                missing image is random background
                                    foreground text is "<Item.ItemDescriptionAbbreviation>"
                column2
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                    paragraph
                        Item
                            raise yellow alert when (SubstituteReceiving)
                                mouse over text is "<SubstituteMessageDisplay>"
                        Description
                            label is "Description"
                    paragraph
                        button of "<PurchaseOrder>"
                            link is ViewPODash
                            label is "PurchaseOrder"
                            display as link
                        button of "<PurchaseOrderLine>"
                            link is POLineDashboard
                            label is "Line"
                            display as link
                    paragraph
                        visible when (HasBuyerMessage)
                            HasBuyerMsgError
                                no label
                                display as tag
                                    color of red
                column3
                    paragraph
                        ReceivedDate
                            label is "DateReceived"
                    paragraph
                        ShipToLocation.RepresentativeText
                            label is "ReceivingLocation"
                    paragraph
                        button of "<PurchaseOrderReceipt>"
                            link is ReceiptDashboard
                            label is "Receipt"
                            display as link
                        button of "<PurchaseOrderLine.LineNumber>"
                            link is ReceivingLineDetail
                            label is "Line"
                            display as link
                    paragraph
                        visible when (IsOutofBalance)
                            IsOutofBalancemsg
                                no label
                                display as tag
                                    color of red
                column4
                    paragraph
                        PurchaseOrderReceipt.Status
                            label is "ReceiptStatus"
                        Status
                            label is "LineStatus"
                    paragraph
                        CreatedBy
                            label is "CreatedBy"
                    paragraph
                        visible when (not IsCatchWeightItemFulfilled)
                            StockQuantityAlertMsg
                                no label
                                display as tag
                                    color of red
