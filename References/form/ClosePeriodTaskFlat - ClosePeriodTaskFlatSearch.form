ClosePeriodTaskFlatSearch is a Form
    Layout
        three column distributed
            column1
                TaskName
                    label is "Task"
                ParentTask.TaskName
                    label is "Parent"
                TaskStatus
                    label is "Status"
                IsOpen
                    label is "ShowOpenOnly"
                ScheduleForTask.DueDate
                    label is "DueDate"
                DueTimeSensitive
            column2
                FinanceTeam
                    label is "Team"
                TaskOwner
                    label is "Owner"
                RequiresApproval
                RequireSupportingDoco
                    label is "RequiresSupportingDocumentation"
                RequireJournalEntry
                    label is "RequiresJournalEntryDetail"
                Overdue
            column3
                TaskCompany
                    label is "Company"
                Priority
                Risk
                HasSupportingDocumentation
                visible when (CloseManagementGroup.AllowOneTimeTasks)
                    OneTimeTask
                DueToday
        visible when (CloseManagementGroup.HasTaskTypes)
            three column distributed
                column1
                    PrimaryTaskType
                        label is "PrimaryType"
                        select is PrimaryCloseTaskTypeSelect
                column2
                    SecondaryTaskType
                        label is "SecondaryType"
                        select is SecondaryCloseTaskTypeSelect
                column3
                    TertiaryTaskType
                        label is "TertiaryType"
                        select is TertiaryCloseTaskTypeSelect
