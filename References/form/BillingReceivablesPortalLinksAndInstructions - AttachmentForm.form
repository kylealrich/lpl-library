AttachmentForm is a Form
    title is "BillingAndReceivablesPortalLinksAndInstructions"
    Layout
        three column
            CustomerGroup
                display as text
            CustomerGroup.CustomerBusinessGroup.Description
                no label
                display as text
            BillingReceivablesPortalLinksAndInstructions
                display as text
        blank line
        single column
            Instructions
                label is "Description"
            DisplayToAnonymousUsers
            Active
            DisplayOrder
                display as text
        paragraph
            visible when (AttachmentExists)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (AttachmentExists)
                button of "View"
                    view Attachment.File
                    display as link
