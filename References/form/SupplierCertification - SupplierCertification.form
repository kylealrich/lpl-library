SupplierCertification is a Form
    title is "SupplierCertification"
    Layout
        display as text
            paragraph
                SupplierGroup
                SupplierGroup.Description
                    no label
            paragraph
                Supplier
                Supplier.SupplierName
                    no label
        paragraph
            SupplierSourceId
                label is "Contact"
            SupplierSourceId.MainContact.FirstAndLastName
                no label
                display as text
        visible when (CommodityCodeAllowed)
            single column
                CommodityCode
                    compact format
                    select is CommodityCodesForASupplierContact
        paragraph
            SupplierCertification.PayablesCertificationCode
            SupplierCertification.PayablesCertificationCode.Description
                no label
                display as text
        single column
            SupplierCertification.CertificationEffectiveDate
                label is "EffectiveDate"
            CertificationExpirationDate
                label is "ExpirationDate"
        paragraph
            Alerts.YellowAlert
            text of "DaysBeforeCertificationExpirationDate"
            Alerts.RedAlert
            text of "DaysBeforeCertificationExpirationDate"
        single column
            Active
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
