CreateForCapitatedContract is a WizardForm
    use for action CreateCapitated
    title is "CreateRequisitionForCapitatedProcedure"
    summary form is CreateCapitatedSummaryForm
    show steps
    Header is a Panel
        form is CreateForProcedureMainForm
        save on next
    Procedures is a Panel
        list is RequisitionLinesRel.CapitatedProcedureLineList
            helper list is ContractLinesForVendorRel.CapitatedProceduresForARequisition
                action is AddProcedureToRequisition
                title is "Procedures"
    Components is a MultiListPanel
        valid when (HasProcedures)
        list is RequisitionLinesRel.CapitatedComponentsRequisitionLineList
            helper list is CapitatedComponentItemsRel.ContractCapitatedComponentGroupItemsSelect
                action is AddToRequisitionConstructComponent
                title is "ComponentsOnConstruct"
        list is RequisitionLinesRel.CapitatedChargedComponentsRequisitionLineList
    ComponentsNotOnConstructOnly is a Panel
        title is "ComponentsNotOnConstruct"
        list is RequisitionLinesRel.NonCapitatedComponentsRequisitionLineList
            helper list is ContractLinesForVendorRel.ContractLinesForACapitatedRequisitionSelect
                action is AddToRequisition
                title is "OtherContractItems"
            helper list is ContractLinesForVendorRel.ContractLinesForACapitatedRequisitionSelect
                action is AddWasteItemToRequisition
                title is "WasteItems"
