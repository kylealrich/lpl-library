GLReportComposite is a CompositeForm
    is primary
    title is "<DerivedReportTitle>"
    context form is GLReportContextForm
        background is theme color
    Actions
        action is GenerateReport
            action icon is process
            valid when (GenerateReportIsValid)
        action is SaveReportParamValues
            action icon is apply
            label is "SetPreviewParameters"
        action is RunReport
            action icon is icon.submit
            valid when (RunReportIsValid)
        action is CopyReport
            action icon is copy
        action is CreateReportExport
            action icon is export
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is GLReportCompositeMainPanel
    ReportElements is a Panel
        title is "SubReports"
        visible when (CompositeReport)
        raise red alert when (ReportHasInvalidSubReport)
            mouse over text is "SubReportHasMissingColumnDimensionFilter"
        list is GLReportElement set.primary
    DimensionFilters is a Panel
        title is "ReportSelection"
        visible when (not CompositeReport)
        list is GLReportFilterDimensionRel.ReportDimensionFilters
    ReportParameters is a Panel
        list is GLReportFilterParam set.primary
    ParameterValues is a Panel
        title is "PreviewParameters"
        list is GLReportFilterParamValueRel.GLReportFilters
    PreviewFormat is a Panel
        valid when (IsGeneratedAndHasFilterValues)
        url is "<DerivedReportURL>"
