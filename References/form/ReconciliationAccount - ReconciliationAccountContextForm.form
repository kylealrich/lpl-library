ReconciliationAccountContextForm is a Form
    title is "Reconciliations"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        visible when (LevelType.Group)
            paragraph
                ReconciliationGroup
                    display only
                visible when (GroupWithNoChildren)
                    ReconciliationGroupMethod
                visible when (GroupWithChildren)
                    ReconciliationGroupMethod
                        display as text
            visible when (ReconciliationAccountExists)
                paragraph
                    ReconciliationAccount
                        display as text
        visible when (LevelType.NonAccount)
            paragraph
                NonAccountReconciliation
                    display only
            visible when (ReconciliationAccountExists)
                paragraph
                    ReconciliationAccount
                        display as text
        visible when (IsAccountWithinGroup)
            paragraph
                ParentReconciliationAccount.ReconciliationGroup
                    display only
        visible when (LevelType.Account)
            paragraph
                visible when (not ReconciliationAccountExists)
                    ReconciliationCodeBlock
                visible when (ReconciliationAccountExists)
                    ReconciliationCodeBlock
                        form is ReconciliationCodeBlockDisplay
                ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
                Currency
                    no label
                    display as text
            visible when (ReconciliationAccountExists)
                paragraph
                    ReconciliationAccount
                        display as text
                    visible when (InactiveAccountingEntity)
                        InactiveAccountingEntityErrorMessage
                            no label
                            display as tag
                                color of red
                    visible when (InactiveAccountingUnit)
                        InactiveAccountingUnitErrorMessage
                            no label
                            display as tag
                                color of red
                    visible when (InactiveAccount)
                        InactiveAccountErrorMessage
                            no label
                            display as tag
                                color of red
