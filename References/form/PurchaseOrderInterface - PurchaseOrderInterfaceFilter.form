PurchaseOrderInterfaceFilter is a SearchForm
    Layout
        four column distributed
            Buyer
            PurchaseOrderInterface.SourceDocumentNumeric
                label is "SourceDocument"
            ItemType
            Vendor
        four column distributed
            POCode
            Company
            PurchaseOrderInterface.RequestingLocation
            paragraph
                Exception
                AllocationPriority
                    label is "Priority"
                    show up to 2 characters
        header3 of "More"
            collapsible
                initially collapsed
                use show more or less affordance
            four column distributed
                ProcurementGroupRel.ProcurementGroup
                PurchaseOrderInterface.OperatingCompany
                    label is "OperatingCompany"
                PurchaseFromLocation
                PurchaseOrderInterface.SourceDocumentOrigin
                    label is "System"
            four column distributed
                CostOption
                ShipToLocation
                MinorPurchasingClass
                    show up to 10 characters
                MajorPurchasingClass
                    show up to 10 characters
            four column distributed
                Manufacturer
                    compact format
                Contract
                Item
                DeliveryMethod
            four column distributed
                paragraph
                    IsSelectedCondition
                        label is "Selected"
                    IsSelectedByActor
                        label is "SelectedByMe"
                paragraph
                    IsItemWithNoVendor
                        label is "Item_withNoVendor"
                    IsItemWithNoCost
                        label is "NoCost"
                HasBuyerPurchasingClass
                    label is "BuyerPurchasingClasses"
                HasBuyerVendor
                    label is "BuyerVendors,_PurchaseFromLocations"
            four column distributed
                HasBuyerPurchasingClass
                    label is "BuyerPurchasingClasses"
                HasBuyerLocation
                    label is "BuyerRequestingLocations"
