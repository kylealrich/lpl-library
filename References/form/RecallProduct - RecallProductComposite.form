RecallProductComposite is a CompositeForm
    is primary
    title is "Product"
    context form is RecallProductContext
        background is theme color
    Items is a Panel
        title is "Items<ItemCount>"
        visible when (not VendorEntered)
        list is RecallProductItem set.ItemsList
            helper list is PolineHelperListRel.RecallPurchaseOrderLines
                action is AttachItemToRecallProduct
    ItemsForVendor is a Panel
        title is "Items<ItemCount>"
        visible when (VendorEntered)
        list is RecallProductItem set.ItemsList
            helper list is VendorPolineHelperListRel.RecallPurchaseOrderLines
                action is AttachItemToRecallProduct
    SerialNumbers is a Panel
        title is "SerialNumbers<SerialNumberCount>"
        visible when (ShowSerialNumberPanel)
        list is RecallProductSerial set.SerialNumbersList
    LotNumbers is a Panel
        title is "LotNumbers<LotNumberCount>"
        visible when (ShowLotNumberPanel)
        list is RecallProductLot set.LotsList
    ProductIdentifiers is a Panel
        visible when (not RecallNotice.Equipment)
        form is ProductIdentifiers
    Questions is a Panel
        title is "Questions<ProductQuestionCount>"
        list is NonItemProposalQuestionRel.RecallProductQuestions
