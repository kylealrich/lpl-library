MReconciliationDetailForm is a CompositeForm
    title is "<DetailType>"
    context form is ReconciliationDetailContextForm
        background is theme color
    Main is a Panel
        form is MReconciliationDetailContextOverview
    PeriodDetails is a Panel
        visible when (not DetailType.Amortization)
        list is ReconciliationPeriodDetail set.MReconciliationPeriodDetailList
    AmortizationDetails is a Panel
        visible when (CanViewAmortizationDetails)
        list is ReconciliationPeriodDetail set.MAmortizationDetailList
    CommentsAndAttachments is a Panel
        list is ReconciliationDetailComment set.MReconciliationDetailCommentList
