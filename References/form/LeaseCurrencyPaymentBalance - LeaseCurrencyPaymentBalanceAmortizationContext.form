LeaseCurrencyPaymentBalanceAmortizationContext is a Form
    title is "LeaseCurrencyAmortization"
    Layout
        display as text
            visible when (HasModifications)
                three column distributed
                    column1
                        blank line
                    column2
                        blank line
                    column3
                        text of "Remaining_Lease_Costs_After_Modification"
                            bold
            four column distributed
                column1
                    Company
                    Lease
                    visible when (not IsGASB87)
                        Lease.LeaseClassification
                            label is "Classification"
                    Vendor
                    visible when (IsReleased)
                        DerivedDate
                            label is "CurrentPeriod"
                                bold
                                color of red
                            bold
                            color of red
                column2
                    paragraph
                        Lease.Term
                    Lease.DerivedLeaseRate
                        label is "InterestRate"
                    Lease.PaymentTiming
                    Lease.LeaseAccountingMethod
                        label is "AccountingMethod"
                    Lease.Currency
                        label is "LeaseCurrency"
                column3
                    Lease.BeginDate
                    Lease.EndDate
                    Lease.LeaseObligation.TransactionAmount
                        label is "BeginningLiability"
                    Lease.LeaseROUAssetAmount.TransactionAmount
                        label is "BeginningROU"
                column4
                    Lease.InitialDirectCost.TransactionAmount
                        label is "InitialDirectCost"
                    Lease.DerivedLeaseIncentiveLeaseCurrency
                        label is "Incentive"
                    visible when (Lease.DownPayment entered)
                        Lease.DownPayment.TransactionAmount
                            label is "DownPayment"
                    visible when (Lease.GuaranteedAmount entered)
                        Lease.GuaranteedAmount.TransactionAmount
                            label is "GuaranteedResidual"
                    visible when (Lease.BargainPurchaseAmount entered)
                        Lease.BargainPurchaseAmount.TransactionAmount
                            label is "BargainPurchase"
