InvoiceOptions is a Form
    Layout
        header2 of "Billing"
        three column distributed
            column1
                visible when (not IsManualInvoiceNumbering)
                    paragraph
                        OriginalBillingInvoice.InvoicePrefix
                            label is "OriginalInvoice"
                        OriginalBillingInvoice.InvoiceNumber
                            no label
                visible when (IsManualInvoiceNumbering)
                    paragraph
                        OriginalBillingInvoiceRel.DerivedDisplayBillingInvoice
                            label is "OriginalInvoice"
                paragraph
                    TermsCode
                    TermsDescription1
                        no label
                        display as text
                    visible when (IsTermsDescription)
                        TermsDescription2
                            no label
                            display as text
                paragraph
                    HoldCode
                    HoldCode.Description
                        no label
                        display as text
            column2
                AutoApply
                paragraph
                    BankTransactionCode
                        label is "PaymentCode"
                    BankTransactionCode.Description
                        no label
                        display as text
                paragraph
                    InvoiceTypeCode
                        select is CustomerInvoiceTypeCodeList
                    InvoiceTypeCode.Description
                        no label
                        display as text
            column3
                paragraph
                    ReceivableGeneralLedgerCode
                        label is "AccountsReceivableCode"
                    ReceivableGeneralLedgerCode.Description
                        no label
                        display as text
                EnteredDiscount.TransactionAmount
                    label is "AdditionalDiscount"
                RegimeCode
        header2 of "Dates"
        three column distributed
            GeneralLedgerDate
                label is "GlobalLedgerPostingDate"
            PriceDate
                label is "PricingDate"
            ShipDate
                label is "ShippingDate"
        three column distributed
            InvoiceDate
            DerivedFinalDueDate
                label is "DueDate"
                display as text
        header2 of "BillTo"
        paragraph
            visible when (not IsUnreleased)
                BillTo
                    display as text
                    raise yellow alert when (ShowBillToWarningMessage)
                        mouse over text is "<BillToWarningMessage>"
            visible when (IsUnreleased)
                BillTo
                    raise yellow alert when (ShowBillToWarningMessage)
                        mouse over text is "<BillToWarningMessage>"
            BillTo.Name
                no label
                display as text
        visible when (BillTo entered)
            paragraph
                BillTo.PostalAddress.DisplayAddressMultiline
                    no label
                    display as text
            paragraph
                visible when (BillTo.PostalAddress.County entered)
                    BillTo.PostalAddress.County
                        no label
                        display as text
            paragraph
                visible when (BillTo.PostalAddress.Region entered)
                    BillTo.PostalAddress.Region
                        no label
                        display as text
            paragraph
                visible when (BillTo.PostalAddress.Country entered)
                    BillTo.PostalAddress.Country
                        no label
                        display as text
            paragraph
                visible when (BillTo.EmailAddress entered)
                    BillTo.EmailAddress
                        no label
                        display as text
            paragraph
                visible when (BillTo.Contact entered)
                    BillTo.Contact
                        no label
                        display as text
