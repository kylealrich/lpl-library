BankStatementReconciliationForm is a CompositeForm
    is primary
    title is "ReconciliationTransaction"
    context form is StatementReconciliationContextForm
        background is theme color
    Actions
        action is UnselectTransaction
            hide when invalid
        action is MatchTransaction
            hide when invalid
        action is AddToMatchNumber
            hide when invalid
        action is AddToOtherMatchNumber
            hide when invalid
        action is MarkAsReconciled
            hide when invalid
        action is FlagAsPending
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is open
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    ReconciledTransactions is a Panel
        visible when (SummaryRecord)
        list is BankStatementReconciliation descendants.DefaultStatementReconciliationList
    RelatedReconciledTransactions is a Panel
        visible when (not SummaryRecord)
        list is RelatedReconciledTransactionsRel.StatementLineRelatedTransactionsList
            helper list is OpenReconciliationDetailsByAccountRel.ReconciliationTransactionHelperList
                action is AddToMatchNumber
                    invoked.PrmReconMatchNumber = ReconMatchNumber
    TransactionDetails is a Panel
        form is TransactionDetailsForm
    ReconciliationVarianceDistributions is a Panel
        visible when (NonCashLedgerWithReconDifference)
        list is NonCashLedgerTransaction.NonCashLedgerDistribution set.NonCashLedgerDistributionList
    ParsedData is a Panel
        visible when (ParsedDataUsed)
        form is ParsedData
