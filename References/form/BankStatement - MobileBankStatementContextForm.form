MobileBankStatementContextForm is a Form
    title is "BankStatement"
    Layout
        visible when (false)
            AssignLocalPostingPeriod
        two column distributed
            column1
                BankStatement
                    label is "StatementNumber"
                    display as text
                PostingStatus
                    display as text
                EntryMethod
                    display as text
                StatementCurrency
                    display as text
            column2
                visible when (not CanUpdateStatement)
                    StatementDate
                        display as text
                visible when (CanUpdateStatement)
                    StatementDate
                paragraph
                    CashManagementAccount
                        display as text
                    CashManagementAccount.Title
                        no label
                        display as text
                paragraph
                    StatementStatus
                        display as text
        single column
            visible when (NetLineAmountOutOfBalance)
                text of "**_StatementOutOfBalanceBy<NetLineOutOfBalanceAmount>"
                    bold
                    color of red
