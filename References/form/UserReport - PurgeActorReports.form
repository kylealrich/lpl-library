PurgeActorReports is an ActionForm
    action is PurgeActorReports
    title is "PurgeReportsCreatedForAnActor"
    Layout
        single column
            text of "ThisWillPurgeAllReportsCreatedForTheSpecifiedActorThatMeetCriteria"
            text of "LeaveActorBlankToPurgePublicSharedReports"
            visible when (not AlwaysApplyDateOrOffset)
                text of "ReportsWithAnExpirationDateWillPurgeIfExpired.ReportsWithoutAnExpirationDateWillPurgeBasedOnSpecifedOffsetOptionsAppliedToCreateDateIfSet,OtherwiseBasedOnADefaultExpiration."
            visible when (AlwaysApplyDateOrOffset)
                text of "ReportsWithAnExpirationDateWillPurgeIfExpired.ReportsWillAlsoPurgeBasedOnSpecifedOffsetOptionsAppliedToCreateDate."
            paragraph
                ParamActor
                text of "or"
                ParamDeletedActor
            IncludeFolders
            ThruDate
            PurgeOffsetDays
            AlwaysApplyDateOrOffset
