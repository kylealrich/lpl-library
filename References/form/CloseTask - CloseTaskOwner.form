CloseTaskOwner is a Form
    title is "Owner"
    Layout
        blank line
        four column distributed
            column1
                visible when (ShowImage)
                    TaskOwner.TeamMember.ResourcePicture.File
                        no label
                        align as label
                        display as portrait image
            column2
                text of "<TaskOwner.TeamMember.FirstAndLastName>"
                    header2
                    align as label
                TaskOwner.TeamMember.EmploymentId
                    label is "EmploymentId"
                    display as text
                TaskOwner.TeamMember.FullWorkPhone
                    label is "WorkPhone"
                    display as text
                TaskOwner.TeamMember.EmailAddress
                    label is "Email"
                    display as text
                TaskOwner.TeamMember.Active
                    label is "Active"
                    display as text
            column3
                text of "Preferences"
                    header2
                    align as label
                paragraph
                    text of "SendUpdatesAsNotifications"
                    TaskOwner.TeamMember.SendUpdatesAsNotification
                        no label
                        display as text
                paragraph
                    text of "SendUpdatesAsEmails"
                    TaskOwner.TeamMember.SendUpdatesAsEmail
                        no label
                        display as text
