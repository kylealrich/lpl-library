PrintableEventDocument is a SummaryForm
    title is "<EventOrTemplate>#<EventVersionOrTemplate>"
    First Page Header
        Layout
            visible when (UseCompanyLogo)
                single column
                    Company.ReportLogo.File
                        no label
                        display as image
            visible when (UseGroupLogo)
                single column
                    Company.SourcingGroup.ReportLogo.File
                        no label
                        display as image
            header2 of "_"
    Page Header
        Layout
            header2 of "_"
                underline color of black
            single column
                text of "<EventOrTemplate>#<SourcingEvent>:_<Name>"
                    header2
                    left align
            header2 of "_"
            blank line
    Page Footer
        Layout
            two column
                text of "<current timestamp>"
                    left align
                text of "Page<page number>"
                    right align
    Layout
        header2 of "<EventOrTemplate>#<SourcingEvent>"
            show border color of black
            shade
            center
        header2 of "_"
        single column
            Name
            EventReference
                label is "Reference"
            Description
                use text area
        blank line
        two column
            Buyer.Employee.PresentationNameSnapshot
                label is "Buyer"
            SourcingEventType
                label is "EventType"
            Category
            DerivedStatus
                label is "Status"
            CurrencyCode
                label is "Currency"
            SubCategory
        blank line
        two column
            Sealed
                label is "SealedBid"
            AllowSupplierQandA
                label is "Q&AAllowed"
            RequireAllLines
                label is "RespondToAllLines"
            NumberOfAmendments
        visible when (not InformalQuote)
            blank line
            two column
                visible when (PreviewDate entered)
                    DerivedTextPreview
                        label is "PreviewDate"
                DerivedTextOpenDate
                    label is "OpenDate"
                visible when (not StepTwoStarted)
                    visible when (not BestAndFinalStarted)
                        DerivedCloseDate
                            label is "CloseDate"
                            display with time zone
                visible when (QandAOpenDate entered)
                    DerivedTextQAOpen
                        label is "QAndAOpen"
                    DerivedTextQAClose
                        label is "QAndAClose"
                visible when (DisputeCloseDate entered)
                    DerivedTextDisputeClose
                        label is "DisputeClose"
            single column
                visible when (BestAndFinalStarted)
                    DerivedTextBestAndFinalCloseDate
                        label is "BestAndFinalCloseDate"
                visible when (StepTwoStarted)
                    DerivedTextStepTwoCloseDate
                        label is "StepTwoCloseDate"
        visible when (ContactsExist)
            blank line
            header2 of "Contacts"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventContact set.SupplierContactsPrint
        visible when (MeetingsExist)
            blank line
            header2 of "Meetings"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventMeeting set.SupplierMeetingsPrint
        visible when (QuestionsExist)
            blank line
            header2 of "Questions"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventQuestion set.SupplierQuestionsPrint
        visible when (TermsExist)
            blank line
            header2 of "Terms_andConditions"
                show border color of black
                shade
                center
            header2 of "_"
            form is SETermsAndConditions
            header2 of "_"
        visible when (AttachmentsExist)
            blank line
            header2 of "Attachments"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventAttachment set.SupplierAttachmentsPrint
        blank line
        header2 of "LineDetails"
            show border color of black
            shade
            center
        header2 of "_"
        form is SELines
