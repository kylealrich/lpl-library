RequisitionLineContext is a Form
    restrict action Processed.UpdateLineReturn
    restrict action MobileCopyRequisitionLine
    restrict action ModalCopyMultipleRequisitionLines
    restrict action NonModalCopyRequisitionLine
    restrict action Unreleased.RSSLPLUpdateRequisitionLine
    restrict action RSSLPLAddNewSpecialServiceToNewRequisition
    restrict action RSSLPLAddNewSpecialServiceToRequisition
    restrict action ModalCopyMultipleRequisitionLinesForSpecialAndService
    restrict action NonModalCopyRequisitionLineForSpecialAndService
    restrict action ModalCopyRequisitionLineForSpecialAndService
    restrict action MobileCopyRequisitionLineForSpecialAndService
    restrict action RSSLPLModalCopyLineOptionPromptForRecentlyRequestedItems
    restrict action RSSLPLModalCopyLineOptionPromptForSpecialAndService
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        Requisition.Requisition
                            label is "Requisition"
                        RequisitionLine
                            label is "Line"
                        Requisition.Requester.Employee.DerivedEmployeeIDName
                            label is "Requester"
                        button of icon.profile
                            link is MobileRequesterInformation
                    Company.RepresentativeText
                        label is "Company"
                column2
                    paragraph
                        Requisition.TotalCurrencyField
                            label is "Total"
                    Requisition.RequestingLocation.RequestingLocationNameID
                column3
                    paragraph
                        Requisition.DerivedStatusMessage
                            label is "RequisitionStatus"
                        visible when (MissingDistribution)
                            MissingDistribMessage
                                no label
                                display as tag
                                    color of yellow
                    paragraph
                        DerivedStatusMessage
                            label is "LineStatus"
                        visible when (DistributionsExistButNotInBalance)
                            paragraph
                                text of "<RemainingToBeDistributed>"
                                    bold
                                visible when (DistributionBy.ByQuantity)
                                    text of "<RemainingQuantityToBeDistributed>"
                                        bold
                                    EnteredUOM
                                        no label
                                visible when (DistributionBy.ByAmount)
                                    text of "<RemainingAmountToBeDistributed>"
                                        bold
                                    TransactionCurrencyCode
                                        no label
                                visible when (DistributionBy.ByPercent)
                                    text of "<RemainingPercentToBeDistributed>"
                                        bold
                        paragraph
                            visible when (SourcingEstimate)
                                SourcingEstimateMessage
                                    no label
                                    display as tag
                                        color of yellow
                        paragraph
                            visible when (OriginalItem entered)
                                SubstituteItemMessage
                                    no label
                                    display as tag
                                        color of yellow
                        paragraph
                            visible when (ItemIsBackordered)
                                VendorBackorderMessage
                                    no label
                                    display as tag
                                        color of yellow
