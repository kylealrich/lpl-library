PFContractApprovalWithTermsUpdatePF is a CompositeForm
    title is "Contract<RepresentativeText>Review"
    context form is PFContractContextWithTermsUpdate
        background is theme color
    restrict action ChangeSupplierAndVendor
    restrict action CheckForContractLineErrors
    restrict action CloseContract
    restrict action CompareContractCost
    restrict action CreateContractBidWorksheet
    restrict action CreateContractDocument
    restrict action CreateDocumentWithFieldsOnly
    restrict action EmailContract
    restrict action EmailContractToSupplier
    restrict action HoldContract
    restrict action ImportParticipantsFromGroup
    restrict action Released.NeedsApproval.ManualApprove
    restrict action Released.NeedsApproval.ManualReject
    restrict action Released.NeedsApproval.ManualDisapprove
    restrict action SelectContractForRebate
    restrict action SetCanUseForCostDefaultingToNo
    restrict action SetCanUseForCostDefaultingToYes
    restrict action SetPreferredLineToNo
    restrict action SetPreferredLineToYes
    restrict action EmailContract
    restrict action EmailContractToSupplier
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Actions
        action is search
            label is "_"
        action is refresh
            label is "_"
    Contract is a Panel
        form is ContractProcessIndicatorForm
    Comments is a Panel
        title is "Comments<CommentCount>"
        visible when (CommentsExist)
        list is ContractCommentRel.PFContractComments
    Attachments is a Panel
        title is "Attachments<AttachmentCount>"
        visible when (AttachmentsExist)
        list is ContractAttachmentRel.PFContractAttachments
    Contacts is a Panel
        title is "Contacts<AttachedContactCount>"
        list is ActiveContractContactsRel.PFAttachedContacts
    Questions is a Panel
        title is "Questions<QuestionCount>"
        visible when (ContractQuestionsExist)
        list is ContractQuestion set.PFContractQuestions
    TermsNegotiation is a Panel
        title is "Terms<ArticleCount>"
        list is ContractArticlesByDisplayRel.PFContractArticles
    Lines is a Panel
        visible when (not ServicePurchaseType)
        list is ContractLine set.NonServiceContractLinesPF
    ServiceLines is a Panel
        visible when (ServicePurchaseType)
        list is ContractLine set.ServiceContractLinesPF
    ChangeOrdersAndAllowances is a MultiListPanel
        visible when (AllowChangeOrder)
        list is ContractVersionsRel.ContractChangeOrders
            visible when (AnyChangeOrderExists)
        list is ContractAllowance set.PFAllowancesForAContract
    Participants is a Panel
        title is "Participants<ParticipantIndicator>"
        visible when (ContractParticipantsExist)
        list is ContractParticipant set.PFContractParticipant
