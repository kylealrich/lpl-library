TermAndConditionUpdateContext is a Form
    title is "TermAndConditionApprovalRequest"
    Layout
        two column
            TermAndConditionUpdate
                label is "Request"
                display as text
            RequestDateTime
                label is "RequestDate"
                display as text
        two column
            RequestingActor
                label is "Requester"
                display as text
            paragraph
                DerivedRequesterName
                    label is "RequesterName"
                    display as text
                visible when (RequesterEmailAddressExists)
                    button of "<DerivedRequesterEmailAddress>"
                        link is "mailto:<DerivedRequesterEmailAddress>"
                        display as link
        visible when (DerivedRequesterPhoneNumber entered)
            single column
                DerivedRequesterPhoneNumber
                    label is "RequesterPhoneNumber"
                    display as text
