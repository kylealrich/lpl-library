MobilePrimaryPaymentForm is a Form
    title is "Payment"
    Layout
        two column table
            column1
                TransientPaymentDate
                    label is "Date"
                    display as text
                DerivedTotalPaymentAmountField
                    label is "PaymentAmount"
                    display as text
                BankTransactionCode.BankTransactionCodeName
                    label is "PaymentCode"
                    display as text
            column2
                first PayablesInvoicePaymentRel.BankStatus
                    label is "Status"
                    display as text
                TransientPaymentNumber
                    label is "PaymentNumber"
                    display as text
                PayGroup.DerivedPayGroupTitle
                    display as text
