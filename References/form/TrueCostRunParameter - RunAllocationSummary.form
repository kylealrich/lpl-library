RunAllocationSummary is a Form
    title is "Summary"
    Layout
        header3 of "RunOptions"
        two column distributed
            display as text
                column1
                    paragraph
                        RunName
                    paragraph
                        RunDescription
                    paragraph
                        Allocation
                    paragraph
                        AllocationGroup
                column2
                    MultiMonthFlag
                    visible when (not MultiMonthFlag)
                        paragraph
                            AllocationPostDate
                    visible when (MultiMonthFlag)
                        paragraph
                            FromAllocationPostDate
                        paragraph
                            ToAllocationPostDate
                    paragraph
                        FromStep
                        ToStep
        two column distributed
            display as text
                column1
                    header2 of "UseLedgers"
                    paragraph
                        UseActualLedger
                    paragraph
                        UseCapacityLedger
                column2
                    header3 of "SourceBalanceOptions"
                    paragraph
                        SourceBalanceOption
                            no label
        blank line
        header3 of "_"
        single column
            button of "Calculate"
                valid when (Status.Incomplete)
                action is RunAllocation
                is primary
