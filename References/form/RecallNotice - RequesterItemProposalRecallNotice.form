RequesterItemProposalRecallNotice is a Form
    Layout
        header2 of "NewItemProposalInformation"
        visible when (SupplierCanUpdate)
            two column
                RecallGroup
                paragraph
                    Supplier
                    Supplier.SupplierName
                        no label
                        display as text
            two column
                Name
                RecallDate
                    label is "Date"
            visible when (RecallGroup.AllowItemProposalSpreadsheetRequester)
                three column
                    visible when (not RecallNoticeExists)
                        visible when (not ProposalItemEntryMethod.Attachment)
                            visible when (not ProposalItemEntryMethod.Online)
                                text of "ItemEntryMethodWillDefaultToOnlineIfNothingIsSelected"
                        ProposalItemEntryMethod
                            display as horizontal radio buttons
                        visible when (ProposalItemEntryMethod.Attachment)
                            text of "AttachSpreadsheetAfterProposalIsCreated;SpreadsheetShouldReferenceRecallGroupAndRecallNotice"
                    visible when (RecallNoticeExists)
                        visible when (CanSelectItemEntryMethod)
                            ProposalItemEntryMethod
                                display as horizontal radio buttons
                            visible when (ProposalItemEntryMethod.Attachment)
                                ProposedItemAttachment.File
                                    label is "ListOfProposedItems"
                        visible when (CannotSelectItemEntryMethod)
                            ProposalItemEntryMethod
                                display as text
                            visible when (ProposalItemEntryMethod.Attachment)
                                ProposedItemAttachment.File
                                    label is "ListOfProposedItems"
            single column
                Description
                    use text area of 2 lines
        visible when (SupplierCannotUpdate)
            display as text
                two column
                    RecallGroup
                    paragraph
                        Supplier
                        Supplier.SupplierName
                            no label
                two column
                    Name
                    RecallDate
                        label is "Date"
                visible when (RecallGroup.AllowItemProposalSpreadsheetRequester)
                    two column
                        ProposalItemEntryMethod
                            display as text
                single column
                    Description
                        use text area of 2 lines
