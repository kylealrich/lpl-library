ParItemForKanbanContextForm is a Form
    Layout
        three column distributed
            column1
                Company
                    display as text
                InventoryLocation
                    display as text
                PreferredBin
                    label is "Shelf"
                    display as text
            column2
                Item.RepresentativeText
                    display as text
                DefaultTransactionUOM.UnitOfMeasure
                    label is "UOM"
                    display as text
                paragraph
                    UseKanban
                    visible when (UseKanban)
                        KanbanWithExpiry
            column3
                visible when (not UseKanban)
                    ReorderPoint
                        label is "ParLevel"
                        display as text
                visible when (UseKanban)
                    ReorderPoint
                        label is "ParLevel"
                visible when (not UseKanban)
                    MinimumOrderQuantity
                        label is "MinimumOrder"
                        display as text
                visible when (UseKanban)
                    MinimumOrderQuantity
                        label is "MinimumOrder"
                visible when (UseKanban)
                    TransientKanbanNumberOfBins
