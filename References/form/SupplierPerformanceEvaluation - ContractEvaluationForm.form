ContractEvaluationForm is a CompositeForm
    title is "EvaluationFor<Contract.RepresentativeText>;EvaluationDescription:<Description>"
    Actions
        action is save
            label is "_"
        action is CompleteEvaluation
            action icon is submit
            label is "CompleteEvaluation"
            hide when invalid
        action is AmendEvaluation
            label is "AmendEvaluation"
            hide when invalid
        navigation is ContractEvaluationSummaryNav
            action icon is pdf
            label is "ViewEvaluation"
        navigation is ViewContract
            label is "ViewContract"
    Evaluation is a Panel
        valid when (not IsEvaluationComplete)
        sub panels are SupplierPerformanceCriteriaGroupRel
            title is "<SupplierPerformanceCriteriaGroup.Category>"
            template is SupplierPerformanceCriteriaRel
                business class is SupplierPerformanceCriteriaResponse
                    form is PerformanceCriteria
