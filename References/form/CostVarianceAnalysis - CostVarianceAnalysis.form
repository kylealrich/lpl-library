CostVarianceAnalysis is an ActionForm
    action is CostVarianceAnalysis
    Layout
        header2 of "Main"
        single column
            paragraph
                CompanyGroup
                text of "Or"
                Company
        single column
            MainSelection
                label is "FilterByDateRange"
                display as horizontal radio buttons
            visible when (MainSelection.ReceivedDate)
                paragraph
                    FrUpdateDate
                        label is "FromDate"
                    ToUpdateDate
                        label is "ToDate"
            visible when (MainSelection.P\ODate)
                paragraph
                    FrPoDate
                        label is "FromDate"
                    ToPoDate
                        label is "ToDate"
            visible when (MainSelection.InvoiceDate)
                paragraph
                    FrInvoiceDate
                        label is "FromDate"
                    ToInvoiceDate
                        label is "ToDate"
        two column
            column1 of 50%
                VendorGroup
                Vendor
                LocationCode
                    label is "PurchaseFromLocation"
            column2 of 50%
                ReportOpt
                    label is "ReportOption"
                IncludeArchive
                    label is "IncludeArchivedRecords"
                CostOption
                    label is "CostAnalysisOption"
        header2 of "Selection"
        single column
            paragraph
                BuyerGrp
                    label is "BuyerGroup"
                text of "Or"
                BuyerCode
                    label is "Buyer"
        two column
            column1 of 45%
                Location
            column2 of 55%
                paragraph
                    PurchMajcl
                        label is "MajorPurchaseClass"
                    PurchMincl
                        label is "MinorPurchaseClass"
        paragraph
            Item
            Item.Description
                no label
                display as text
        four column distributed
            column1
                ItemType.MA278ItemType[1]
                    label is "ItemType1"
            column2
                ItemType.MA278ItemType[2]
                    label is "ItemType2"
            column3
                ItemType.MA278ItemType[3]
                    label is "ItemType3"
            column4
                ItemType.MA278ItemType[4]
                    label is "ItemType4"
        single column
            PoCodeSelect
                label is "P\\OCodeOption"
        three column distributed
            column1
                PoCode.PoCode[1]
                    label is "P\\OCodes"
                PoCode.PoCode[4]
                    no label
            column2
                PoCode.PoCode[2]
                    no label
                PoCode.PoCode[5]
                    no label
            column3
                PoCode.PoCode[3]
                    no label
                PoCode.PoCode[6]
                    no label
        single column
            ManufCodeSelect
                label is "ManufacturerCodeOption"
        three column distributed
            column1
                ManufCode.ManufCode[1]
                    label is "ManufacturerCodes"
                    compact format
                ManufCode.ManufCode[4]
                    no label
                    compact format
            column2
                ManufCode.ManufCode[2]
                    no label
                    compact format
                ManufCode.ManufCode[5]
                    no label
                    compact format
            column3
                ManufCode.ManufCode[3]
                    no label
                    compact format
                ManufCode.ManufCode[6]
                    no label
                    compact format
        header2 of "Output"
        three column distributed
            column1
                ReportSeq
                    label is "SequenceOption"
                PrintGtin
                    label is "PrintG\\T\\I\\N"
                CostVarSortOption
                    label is "SortByCostVariance"
            column2
                SummaryOption
                    label is "SummaryOnly"
                PrintUnspsc
                    label is "PrintU\\N\\S\\P\\S\\C"
                CostVarPct
                    label is "CostVariancePercentage"
            column3
                PrintVendorItem
                PrintCommCode
                    label is "PrintCommodityCode"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CostVarianceAnalysisReport_RDG
                CostVarianceAnalysisErrorReport_RDG
            column2 of 25%
                CostVarianceAnalysisReport_XPT
                CostVarianceAnalysisErrorReport_XPT
