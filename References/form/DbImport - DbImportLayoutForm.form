DbImportLayoutForm is an ActionForm
    action is RunCommand
    title is "Import_toDatabase"
    Layout
        WorkDirectory
        header3 of "Select_aBusinessClass"
        single column
            BusinessClass
                select is BusinessViewDBList
        header3 of "SourceFile"
        single column
            FileFormat
                display as horizontal radio buttons
            FileName
        header3 of "ImportOptions"
        single column
            ValidateOnly
            Duplicates
            IncludeUserFields
            IncludeTranslations
            NormalizeRecords
            visible when (Duplicates.ProvideError)
                DisableBatchInserts
        DelimitersAndPatterns
