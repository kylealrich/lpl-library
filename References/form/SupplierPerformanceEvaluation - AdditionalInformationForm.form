AdditionalInformationForm is a Form
    Layout
        display as text
            two column
                visible when (HasScoring)
                    TotalPerformanceScore
                        label is "OverallRating"
                        display as rating
                Evaluator.Employee.FirstLastName
                    label is "EvaluatorName"
            paragraph
                NotificationDate
                NotifiedDate
                DueDate
                EvaluationCompletionDate date
                    label is "CompletionDate"
                FinalizedDate
            three column
                Supplier.SupplierName
                visible when (HasApprover)
                    Approver.Employee.FirstLastName
                        label is "ApproverName"
                PerformanceEvaluationTemplate.Name
                    label is "TemplateName"
                HasBeenCompleted
            paragraph
                text of "Reminder_Emails_Sent_For:"
                    bold
                YellowAlertSent
                    label is "EvaluatorYellowAlert"
                RedAlertSent
                    label is "EvaluatorRedAlert"
                visible when (HasApprover)
                    ApproverYellowAlertSent
                        label is "ApproverYellowAlert"
                    ApproverRedAlertSent
                        label is "ApproverRedAlert"
