RecallNotice is a CompositeForm
    is primary
    title is "Notice<DerivedRecallNotice>"
    context form is RecallContext
        background is theme color
    Actions
        action is ProductTransactionQuery
            action icon is submit
            hide when invalid
            valid when (DisplayProductTransactionQuery)
        action is ProductEquipmentQuery
            action icon is submit
            hide when invalid
            valid when (DisplayEquipmentProductTransactionQuery)
        action is Pending.Release
            action icon is release
            hide when invalid
        action is Pending.CloseAsDuplicate
            action icon is reject
            hide when invalid
        action is Pending.NotApplicable
            action icon is reject
            hide when invalid
        action is Active.Close
            action icon is finalize
            hide when invalid
        action is CompletedResolutionsPending.Close
            action icon is finalize
            hide when invalid
        action is Pending.ApproveProposedItems
            hide when invalid
        action is Pending.ApproveProposedItemsPendingTrial
            hide when invalid
        action is Pending.RejectProposedItems
            hide when invalid
        action is Active.NotApplicable
            action icon is reject
            hide when invalid
        navigation is RecallDocumentReport
            action icon is print
            label is "PrintDocument"
            hide when invalid
            valid when (RecallNoticeExists)
        navigation is RecallActivityLink
            action icon is preview
            label is "TaskActivity"
            hide when invalid
            valid when (NoticeWithActivity)
        navigation is Resolutions
            action icon is claim
            label is "Resolutions"
            hide when invalid
            valid when (AllowResolutions)
        navigation is NewItemProposalReport
            hide when invalid
        action is CopyNotice
            action icon is copy
            label is "Copy"
            mouse over text is "CopyNotice"
        navigation is CreateTrialRequisitions
            hide when invalid
        navigation is Documentation
            hide when invalid
        navigation is ItemsInProcessNav
            label is "ItemsInProcess"
            hide when invalid
        action is Pending.AllTrialRequisitionsCreated
            hide when invalid
        action is CopyFromAnotherTrialItemNotice
            hide when invalid
        action is Pending.UpdateTrialEndDate
            hide when invalid
        action is Pending.CancelTrial
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is Pending.Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            label is "_"
        action is refresh
            label is "_"
    General is a Panel
        form is RecallGeneral
    Products is a Panel
        title is "Products<ProductCount>"
        visible when (DisplayRecallProductDetails)
        list is ProductStandardRel.RecallProductDetails
    Products2 is a Panel
        title is "Products<ProductCount>"
        visible when (DisplayRecallProductItemDetails)
        list is ProductStandardRel.RecallProductItemDetails
    EquipmentProducts is a Panel
        title is "Products<ProductCount>"
        visible when (Equipment)
        list is RecallProduct set.RecallProductEquipmentDetails
    Tasks is a Panel
        title is "Tasks<TaskCount>"
        visible when (CreateTaskForOrganization)
        list is RecallNoticeTask set.RecallNoticeTaskDetails
            helper list is RecallUserHelperListRel.RecallNoticeTaskHelperList
                action is AttachToRecallNoticeTask
                title is "CreateManualTaskForUser"
            helper list is RecallOrganizationHelperListRel.RecallNoticeTaskHelperList
                action is AttachToRecallNoticeTask
                title is "CreateManualTaskForOrganization"
    TasksNoOrganization is a Panel
        title is "Tasks<TaskCount>"
        visible when (not CreateTaskForOrganization)
        list is RecallNoticeTask set.RecallNoticeTaskDetails
            helper list is RecallUserHelperListRel.RecallNoticeTaskHelperList
                action is AttachToRecallNoticeTask
                title is "CreateManualTaskForUser"
    References is a Panel
        title is "References<ReferenceCount>"
        list is RecallNoticeReference set.RecallNoticeReferences
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is RecallComment set.RecallComments
    QAndA is a Panel
        title is "Q&A<QandACount>"
        visible when (HasRecallQandA)
        list is RecallNoticeQandA set.RecallNoticeQAndAList
    Domains is a Panel
        title is "Domains<DomainCount>"
        list is RecallNoticeDomain set.RecallNoticeDomains
            helper list is RecallDomainHelperListRel.RecallDomainHelperList
                action is AttachToRecallNoticeDomain
    Notifications is a MultiListPanel
        title is "Notifications<NotificationIndicator>"
        list is RecallNotification set.RecallNotifications
            helper list is RecallUserHelperListRel.RecallNotificationHelperList
                action is AttachToRecallNotification
        list is RecallAdhocNotificationRel.AdhocWatchersForANotice
            helper list is AdhocUserRel.AdhocWatcherHelperList
                action is AttachToRecallNotification
    Organizations is a Panel
        visible when (ShowOrganizations)
        list is RecallNoticeOrganizationRel.OrganizationsForANotice
    Products4 is a Panel
        title is "NewItems"
        visible when (DisplayItemProposalDetails)
        list is ProductItemProposalRel.ItemProposalDetails
    ProposedItemReview is a Panel
        title is "NewItemReviewers<ReviewerIndicator>"
        visible when (ItemProposal)
        list is RecallNoticeTask set.ProposedItemReview
            helper list is RecallUserHelperListRel.ActiveRecallReviewerHelperList
                action is AttachToRecallNoticeItemProposal
                valid when (UnapprovedItemProposal)
    TrialItemCompaniesAndLocations is a Panel
        visible when (CanDisplayTrialItemCompaniesAndLocations)
        list is TrialItemCompaniesAndLocations set.TrialItemCompaniesAndLocationsList
    ActionSummary is a Panel
        title is "ResolutionSummary"
        visible when (HasResolutions)
        list is RecallProductItemAction set.RecallProductItemActionSummary
    ApprovalHistory is a Panel
        visible when (HasWorkunit)
        form is ApprovalHistory
