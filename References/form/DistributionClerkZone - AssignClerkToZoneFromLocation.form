AssignClerkToZoneFromLocation is an ActionForm
    action is AssignDistributionClerkToZoneFromLocation
    submit label is "Assign"
    title is "AssignClerkToZone"
    Layout
        paragraph
            PrmAssignClerkTo
                no label
                display as horizontal radio buttons
                when value changed
                    PrmInventoryLocation =  blank
                    PrmWarehouseZone =  blank
        visible when (PrmAssignClerkTo.AllZonesFromLocation)
            display as text
                paragraph
                    PrmDistributionClerk
                        label is "DistributionClerk"
                    PrmInventoryCompany
                        label is "Company"
            paragraph
                PrmInventoryLocation
                    label is "InventoryLocation"
                    select is InventoryLocationsRel.DistributionManagementLocationsForClerkSelectionList
                    display as required
        visible when (PrmAssignClerkTo.SingleZoneFromLocation)
            single column
                display as text
                    paragraph
                        PrmDistributionClerk
                            label is "DistributionClerk"
                        PrmInventoryCompany
                            label is "Company"
                PrmInventoryLocation
                    label is "InventoryLocation"
                    select is InventoryLocationsRel.DistributionManagementLocationsForClerkSelectionList
                    display as required
                PrmWarehouseZone
                    label is "Zone"
                    select is ZonesForDistributionClerkSelectionList
                    display as required
