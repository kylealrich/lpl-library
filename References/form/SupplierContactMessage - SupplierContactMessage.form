SupplierContactMessage is a Form
    is primary
    title is "PortalMessage"
    Layout
        display as text
            paragraph
                Supplier.RepresentativeText
                SupplierSourceId.RepresentativeText
            two column
                CreationDateTime
                    label is "CreationDate/Time"
                ReleaseStatus
        single column
            MessageTitle
                label is "Title"
            MessageText
                label is "Message"
                use text area of 5 lines
        two column
            Priority
            Status
                display only
        paragraph
            MessageOwner
                select is DialogContactForSupplierPortalDialog
            DialogContactName
                no label
                display as text
        paragraph
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
