ReviewTransactionContextForm is a Form
    title is "ReviewTransaction"
    Layout
        display as text
            three column distributed
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                    visible when (IsNonBaseCurrency)
                        Company.Currency
                            label is "Currency"
                paragraph
                    BatchNumber
                        label is "Batch"
                    ReceivableInvoiceDetail.Invoice
                    ReceivableInvoiceDetail.PaymentSeq
                        label is "Sequence"
                Status
            three column distributed
                paragraph
                    Customer.RepresentativeText
                    ReceivableProcessLevel.RepresentativeText
                paragraph
                    TransactionDate
                    GeneralLedgerDate
                paragraph
                    TransientSignedTransactionAmount
                    OriginalCurrency
                        no label
                    TransientSignedOpenAmount
