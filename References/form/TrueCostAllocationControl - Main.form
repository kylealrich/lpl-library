Main is a Form
    Layout
        visible when (not RecordExists)
            single column distributed
                column1
                    paragraph distributed
                        TrueCostAllocationControl
                            label is "True\\CostAllocationControl"
            blank line
        three column distributed
            column1
                paragraph
                    Description
                paragraph
                    SourceLedger
            column2
                paragraph
                    Calendar
                paragraph
                    ActualsLedger
            column3
                paragraph
                    AllocationControlRel.PeriodType
                        label is "PeriodType"
                        display as text
                paragraph
                    CapacityLedger
        blank line
        header2 of "Structures"
        four column distributed
            column1
                paragraph
                    Chart
                        label is "CostBreakdown"
            column2
                paragraph
                    ExpenseAccounts
                        select is Chart.ChartAccountNode.ChartAccountChildrenRel.ChartAccountList
                        show up to 14 characters
            column3
                paragraph
                    text of "_"
            column4
                paragraph
                    text of "_"
        text of "_"
        blank line
        four column distributed
            column1
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.ProjectLabelExists)
                        ProjectStructure
                            label is "<TrueCostConfiguration.ProjectLabel>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.AccountingUnitSelected)
                        AccountingUnitStructure
                            label is "<TrueCostConfiguration.AccountingUnitLabel>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension1Entry)
                        FinanceDimension1Structure
                            label is "<TrueCostConfiguration.FinanceDimension1Label>"
            column2
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension2Entry)
                        FinanceDimension2Structure
                            label is "<TrueCostConfiguration.FinanceDimension2Label>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension3Entry)
                        FinanceDimension3Structure
                            label is "<TrueCostConfiguration.FinanceDimension3Label>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension4Entry)
                        FinanceDimension4Structure
                            label is "<TrueCostConfiguration.FinanceDimension4Label>"
            column3
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension5Entry)
                        FinanceDimension5Structure
                            label is "<TrueCostConfiguration.FinanceDimension5Label>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension6Entry)
                        FinanceDimension6Structure
                            label is "<TrueCostConfiguration.FinanceDimension6Label>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension7Entry)
                        FinanceDimension7Structure
                            label is "<TrueCostConfiguration.FinanceDimension7Label>"
            column4
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension8Entry)
                        FinanceDimension8Structure
                            label is "<TrueCostConfiguration.FinanceDimension8Label>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension9Entry)
                        FinanceDimension9Structure
                            label is "<TrueCostConfiguration.FinanceDimension9Label>"
                paragraph
                    visible when (TrueCostConfiguration.FinanceEnterpriseGroup.FinanceDimension10Entry)
                        FinanceDimension10Structure
                            label is "<TrueCostConfiguration.FinanceDimension10Label>"
        blank line
