FreightClassForm is a Form
    use for action CreateFreightClass
    title is "FreightClass"
    Layout
        paragraph
            visible when (not ItemGroupEntered)
                ItemGroup
                    select is ItemGroups
                ItemGroup.Description
                    no label
                    display as text
            visible when (ItemGroupEntered)
                ItemGroup.ItemGroupDescription
                    label is "ItemGroup"
                    display as text
        visible when (MajorClassExists)
            single column
                ClassType
                    display as text
        paragraph
            visible when (MajorClass entered)
                MajorClass
                    label is "FreightClass"
                    display as text
                    select is FreightClasses
            visible when (MajorClass not entered)
                MajorClass
                    select is MajorClasses
                    show up to 10 characters
            Description
            Active
