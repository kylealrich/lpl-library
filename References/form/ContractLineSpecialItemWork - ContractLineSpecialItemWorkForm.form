ContractLineSpecialItemWorkForm is a Form
    title is "ContractLineSpecialItemForItemMasterItemCreation"
    Layout
        paragraph
            ContractLine
                label is "Line"
                display as text
            ContractLine.CanUseForCostDefaulting
                display as text
            visible when (not Contract.ContractTemplate)
                ContractLine.OnHold
                    label is "Hold"
                    display as text
        two column
            visible when (ContractLine.IsDistributorWithManufacturerContract)
                ContractLine.ManufacturerContract
                    label is "ManufacturerContract"
                    display as text
                ContractLine.ManufacturerContractLine
                    label is "Line"
                    display as text
        paragraph
            LineNumber
                display as text
        paragraph
            ContractLine.ItemNumber
                label is "ContractLineItem"
                display as text
        paragraph
            ContractLine.ItemDescription
                label is "ContractLineDescription"
                display as text
            ContractLine.ItemDescription2
                no label
                display as text
        single column
            ContractLine.ItemDescription3
                label is "LongItemDescription"
                use text area of 2 lines
        single column
            UOM
                display as text
        paragraph
            VendorItem
                display as text
            VendorItemDescription
                no label
                display as text
        paragraph
            Manufacturer
                label is "ManufacturerCode"
                display as text
                compact format
            ManufacturerNumber
                display as text
        single column
            ContractLine.CommodityCode
                label is "ContractLineCommodityCode"
                display as text
                compact format
        single column
            visible when (GTINEntered)
                GlobalTradeItemNumber
                    display as text
        paragraph
            visible when (NewItemMaster entered)
                NewItemMaster
                    display as text
                NewItemMaster.StockUOM
                    display as text
