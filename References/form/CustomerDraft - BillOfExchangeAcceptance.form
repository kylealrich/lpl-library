BillOfExchangeAcceptance is a Form
    Actions
        action is Created.Accept
            action icon is approve
            hide when invalid
        action is Created.Update
            action icon is edit
            hide when invalid
        action is Accepted.Unaccept
            action icon is reject
            hide when invalid
        action is Accepted.Cash
            action icon is award
            hide when invalid
        action is Accepted.Select
            action icon is submit
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is refresh
            label is "_"
    Layout
        two column distributed
            column1
                display as text
                    paragraph
                        RepresentativeText
                        Company.GeneralLedgerCompany.Currency
                            no label
                    paragraph
                        CustomerDraft
                            compact format
                        Status
                    paragraph
                        CustomerRepresentativeText
                blank line
                paragraph
                    AcceptDate
                        label is "AcceptedDate"
                paragraph
                    AcceptPostDate
                        label is "PostDate"
                    TransactionAmount
                        label is "TransactionAmount"
                        display as text
                    OriginalCurrency
                        no label
                        display as text
            column2
                display as text
                    paragraph
                        MaturityDate
                            label is "DueDate"
                        BaseAmount
                            label is "BaseAmount"
                blank line
                paragraph
                    BankEntity
                        label is "Bank"
                paragraph
                    BankAccountNumber
                        label is "AccountNumber"
                    RIBKey
                display as text
                    paragraph
                        BankEntity.BankName
                        BankEntity.PostalAddress.Municipality
                paragraph
                    PayerReference
                        label is "PayersReference"
