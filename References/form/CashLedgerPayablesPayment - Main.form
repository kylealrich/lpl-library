Main is a Form
    Layout
        single column
            visible when (ManualPmtRecordExists)
                TransactionNumber
                    label is "TransactionNumber"
        paragraph
            visible when (ConfirmationNumber entered)
                ConfirmationNumber
        two column distributed
            column1
                paragraph
                    VendorGroup
                    VendorGroup.Description
                        no label
                        display as text
                paragraph
                    PaidVendor
                    PaidVendor.VendorName
                        no label
                        display as text
                paragraph
                    PayablesCompanyProcessLevel.PayablesCompany
                    PayablesCompanyProcessLevel.PayablesCompany.Name
                        no label
                        display as text
                paragraph
                    Company
                        label is "CashPostingCompany"
                    Company.Name
                        no label
                        display as text
                    Company.Currency
                        no label
                        display as text
                paragraph
                    PaidDate
                        label is "BankIssuedPaidDate"
                    RejectDate
                    StaleDate
                paragraph
                    ApprovalCostCenter
            column2
                paragraph
                    PayGroup
                paragraph
                    InvoiceVendor
                        display as text
                    InvoiceVendorName
                        no label
                        display as text
                paragraph
                    RemitToCode
                    RemitToCode.VendorName
                        no label
                        display as text
                paragraph
                    PaymentAmount
                    PayCurrency
                    button of "WithholdingDetails"
                        visible when (CashPaymentWithholdingExists)
                        link is CashPaymentWithholding
                        display as link
                paragraph
                    BankAmount
                    BankCurrency
                paragraph
                    VATSplitAmount
        single column
            paragraph
                visible when (HasRejectAttachment)
                    RejectAttachment
                        compact format
                    button of "View"
                        view RejectAttachment.File
                        display as link
                    button of "MaintainAttachment"
                        action is MaintainAttachment
                        display as link
        header3 of "Default"
        single column
            paragraph
                PayablesProcessGroup
                    label is "ProcessGroup"
            paragraph
                GeneralLedgerSourceCode
                    label is "SourceCode"
            paragraph
                PayablesCompanyProcessLevel.PayablesProcessLevel
                PayablesCompanyProcessLevel.PayablesProcessLevel.Name
                    no label
                    display as text
