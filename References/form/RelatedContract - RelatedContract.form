RelatedContract is a Form
    is primary
    title is "RelatedReference"
    Layout
        display as text
            four column distributed
                column1
                    Contract.RepresentativeText
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                column3
                    Contract.WorkingContractID
                column4
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        header2 of "_"
        visible when (not DisplayOnly)
            two column
                RelatedContractType
                    label is "RelatedReferenceType"
                RelatedContractID
                    label is "RelatedReference"
            single column
                RelatedContractDescription
                    label is "ReferenceDescription"
                    use text area of 4 lines
            paragraph
                Company
                Company.Name
                    no label
                    display as text
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            two column
                paragraph
                    Supplier
                    Supplier.SupplierName
                        no label
                        display as text
                RelatedSupplierName
                    label is "\\orOtherSupplierName"
            paragraph
                ManufacturerCodeDivision
                    compact format
                ManufacturerCodeDivision.Description
                    no label
                    display as text
            single column
                WorkingContract
        visible when (DisplayOnly)
            display as text
                two column
                    RelatedContractType
                        label is "RelatedReferenceType"
                    RelatedContractID
                        label is "RelatedReference"
                single column
                    RelatedContractDescription
                        label is "ReferenceDescription"
                        use text area of 4 lines
                paragraph
                    Vendor.RepresentativeText
                two column
                    Supplier.RepresentativeText
                    RelatedSupplierName
                        label is "\\orOtherSupplierName"
                paragraph
                    ManufacturerCodeDivision
                        compact format
                    ManufacturerCodeDivision.Description
                        no label
                single column
                    WorkingContract
