MobileMain is a Form
    title is "Main"
    Layout
        header2 of "LocationInformation"
        single column
            LocationType
            RemitToCode
            RemitToCode.VendorName
                no label
                display as text
            NormalRemitToLocation
            NormalPurchaseFromLocation
                label is "G\\L\\N"
                display as text
            VendorAccount
            VATRegistrationCountry
                label is "V\\A\\TRegistrationCountry/\\Jurisdiction"
            VATRegistrationNumber
            visible when (VendorGroup.BusinessGroup.UseHSNSACCode)
                paragraph
                    TaxRegistrationType
        header2 of "Currency"
        single column
            InvoiceCurrency
                label is "Invoice"
            RevalueCurrency
                label is "Revalue"
        header2 of "CurrentAddress"
        visible when (not RecordExists)
            VendorAddress
        visible when (RecordExists)
            single column
                display as text
                    CurrentAddressRel.FullAddressDisplay
                        label is "PostalAddress"
                button of "ChangeAddress"
                    form invoke is ChangeCurrentAddress
        header2 of "PrimaryContact"
        visible when (not RecordExists)
            single column
                ContactName
                TwitterID
                PhoneNumber
                MobileNumber
                FaxNumber
                EmailAddress
        visible when (RecordExists)
            single column
                display as text
                    PrimeVendorLocationContactRel.ContactName
                    PrimeVendorLocationContactRel.TwitterID
                    PrimeVendorLocationContactRel.PhoneNumber
                    PrimeVendorLocationContactRel.MobileNumber
                    PrimeVendorLocationContactRel.FaxNumber
                    PrimeVendorLocationContactRel.EmailAddress
