CreateSupplierDialog is an ActionForm
    action is CreateMessageAndDialog
    Layout
        two column
            PurchaseOrder
                display as text
        two column
            visible when (not VendorRel.SingleSupplier)
                ParmSupplier
                ParmSupplier.SupplierName
                    no label
                    display as text
            visible when (VendorRel.SingleSupplier)
                visible when (VendorRel.SingleSupplierMultipleContacts)
                    visible when (HasSupplierContactForPurchaseFrom)
                        VendorRel.first SupplierRel.RepresentativeText
                            label is "Supplier"
                            display as text
                    visible when (not HasSupplierContactForPurchaseFrom)
                        ParmSupplier
                            select is VendorSuppliers
                        ParmSupplier.SupplierName
                            no label
                            display as text
                visible when (not VendorRel.SingleSupplierMultipleContacts)
                    VendorRel.first SupplierRel.RepresentativeText
                        label is "Supplier"
                        display as text
        two column
            visible when (HasSupplierContactForPurchaseFrom)
                PurchaseFromSupplierSourceIdRel.RepresentativeText
                    display as text
            visible when (not HasSupplierContactForPurchaseFrom)
                visible when (VendorRel.SingleSupplierMultipleContacts)
                    ParmSupplierContact
                        select is ContactsForASupplier
                    ParmSupplierContact.MainContact.FirstAndLastName
                        label is "SingleSupplierMultipleContacts"
                        display as text
                visible when (VendorRel.MultipleSuppliers)
                    ParmSupplierContact
                        select is ContactsForASupplier
                    ParmSupplierContact.MainContact.FirstAndLastName
                        no label
                        display as text
                visible when (VendorRel.SingleSupplierAndContact)
                    VendorRel.first SupplierRel.PrimaryContact.RepresentativeText
                        label is "SupplierContact"
                        display as text
        single column
            ParmDialogMessage
                use text area of 5 lines
            ParmDialogAttachment.File
                label is "Attachment"
        two column
            ParmPriority
            ParmResponseRequested
