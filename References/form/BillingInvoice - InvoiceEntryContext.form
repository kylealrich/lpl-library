InvoiceEntryContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (BillingInvoice not entered)
                        Company
                    visible when (BillingInvoice entered)
                        Company.RepresentativeText
                            label is "Company"
                            display as text
            column2
                paragraph
                    visible when (BillingInvoice not entered)
                        BatchNumber
                            label is "Batch"
                    visible when (BillingInvoice entered)
                        BatchNumber
                            label is "Batch"
                            display as text
                    BatchNumber.Description
                        no label
                        display as text
            column3
                paragraph
                    visible when (BillingInvoice entered)
                        Status
                            display as tag
                                color of gray when (Status.Unreleased)
                                color of green when (not Status.Unreleased)
                    Description
        three column distributed
            column1
                visible when (BillingInvoice entered)
                    BillingInvoiceSource
                        label is "InvoiceSource"
                        display as text
            column2
                visible when (BillingInvoice entered)
                    InvoiceNetDueBase
                        label is "NetDue"
                        display as text
            column3
                paragraph
                    button of "ViewInvoice"
                        visible when (DisplayIDMInvoiceLink)
                        link is external "<DerivedIDMInvoiceLink>"
                        display as link
                    visible when (WithIDMError)
                        paragraph
                            IDMStatusMessage
                                no label
                                display as tag
                                    color of red
                            visible when (ShowIDMJobErrorLink)
                                button of "View_IDM_Job"
                                    link is IDMJobError
                                    display as link
                            visible when (ShowIDMJobAssembledErrorLink)
                                button of "View_IDM_Job"
                                    link is IDMJobAssembledError
                                    display as link
                    visible when (InvoiceHoldCodeCheck)
                        DerivedInvoiceOnHold
                            no label
                            display as tag
                                color of red
        three column distributed
            column1
                visible when (Company.ManualInvoiceNumbering)
                    GlobalInvoiceNumber
                        label is "Invoice"
            column2
                visible when (InvoiceHold.SentForApproval)
                    text of "WaitingForProcessInvoiceBOD"
                        bold
                        color of red
            column3
