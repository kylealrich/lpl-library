MainForm is a Form
    Layout
        three column
            column1
                paragraph
                    WarehouseShipmentLine
                        label is "Line"
                        display as text
                    WarehouseShipment.WarehouseBatch
                        label is "BatchNumber"
                        display as text
                paragraph
                    Item.RepresentativeText
                        display as text
                    visible when (IsHSNSACCodeEnabled)
                        HSNSACCode
                        HSNSACCode.Description
                            no label
                            display as text
                paragraph
                    TransactionUOM
                        label is "UOM"
                        display as text
            column2
                paragraph
                    DerivedPrintedQuantityInTransUOM
                        display as text
                    DerivedShippedQuantityInTransUOM
                        display as text
                paragraph
                    OpenQuantity
                        label is "OpenQuantity"
                        display as text
                    DerivedInProcessQuantityInTransUOM
                        label is "InProcessQuantity"
                        display as text
                paragraph
                    visible when (IsKitItem)
                        TransientPreAssembledQuantity
                            label is "PreassembledKits"
                paragraph
                    visible when (HasBackorder)
                        TotalBackorderQuantity
                            label is "BackorderQuantity"
                    visible when (HasVoid)
                        TotalVoidedQuantity
                            label is "VoidedQuantity"
            column3
                visible when (IsCatchWeightItem)
                    header2 of "CatchWeight"
                    paragraph
                        visible when (CanUpdateCatchweight)
                            CatchWeightQuantity
                                label is "StockQuantity"
                        visible when (not CanUpdateCatchweight)
                            CatchWeightQuantity
                                label is "StockQuantity"
                                display as text
                        CatchWeightUOM
                            label is "StockU\\O\\M"
                            display as text
                        visible when (IsCatchWeightQuantityOutOfTolerance)
                            text of "<CatchWeightOutOfToleranceMessage>"
                                bold
        two column distributed
            column1
                header2 of "Options"
                MSDSRequired
                    label is "MSDSRequired"
                MSDSDate
                MSDSDocument
                MSDSVersion
            column2
                header2 of "Intrastat"
                SupplementaryUOM
                    label is "SupplementalU\\O\\M"
                    display as text
                SupplementaryQuantity
                    label is "SupplementalQuantity"
                    display as text
                GlobalLineType
                    label is "LineType"
        visible when (RequisitionLineRel.HasSpecialHandlingCode)
            header2 of "SpecialHandling"
            single column
            paragraph
                DerivedSpecialHandlingCode
                    label is "SpecialHandlingCode"
                DerivedSpecialHandlingDescription
                    no label
                    display as text
        two column distributed
            visible when (RequisitionLineRel.HasHandlingInstructionsToDisplay)
                DerivedSpecialHandlingInstructions
                    display as text
                    use text area of 5 lines
        visible when (RequisitionLineRel.HasSpecialHandlingCode)
            DerivedTimeSensitive
                label is "TimeSensitive"
                display as text
        visible when (RequisitionLineRel.SpecialHandlingCode.TimeSensitive)
            DerivedHandlingTimeInMinutes
                label is "HandlingTimeInMinutes"
