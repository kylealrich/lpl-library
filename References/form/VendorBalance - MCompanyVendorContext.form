MCompanyVendorContext is a Form
    title is "CompanyVendorContext"
    Layout
        display as text
            single column
                paragraph
                    Company
                    Company.Name
                        no label
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                paragraph
                    VendorLocation
                        label is "Location"
                    VendorLocation.VendorName
                        no label
            two column distributed
                column1
                    EnteredPeriod
                        label is "DisplayPeriod"
                    DerivedPeriodEndDate
                        label is "PeriodEndDate"
                        display as text
                column2
                    DerivedPeriod
                        label is "Period"
                        display as text
                    visible when (RecordExists)
                        BalanceCurrency
                            label is "Currency"
                            display as text
                    visible when (not RecordExists)
                        BalanceCurrency
                            label is "Currency"
                            display as text
