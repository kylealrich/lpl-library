WorkOrderCommentForm is a Form
    is primary
    propagate as a drill
    title is "WorkOrder_<WorkOrder>_Comment_<WorkOrderComment>"
    Layout
        display as text
            three column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                    InventoryLocation.RepresentativeText
                        label is "Location"
                column2
                    WorkOrder
                    WorkOrder.Item.RepresentativeText
                column3
                    WorkOrder.Status
                    paragraph
                        WorkOrder.PickingFeedbackStatus
                        WorkOrder.ProductionFeedbackStatus
        header2 of "_"
        single column
            WorkOrderComment
                display as text
            Name
                label is "Title"
            Type
            Comment
