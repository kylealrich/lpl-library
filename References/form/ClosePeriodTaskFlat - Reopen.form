Reopen is an ActionForm
    action is Reopen
    title is "ReopenTask"
    Layout
        visible when (ClosePeriodTaskFlat.DetailPeriodTask.ReopenNeedsReassignment)
            header3 of "<PrmTaskOwner.TeamMember.FirstAndLastName>IsNoLongerAMemberOfThisTeam-MustReassignToReopen"
            two column
                PrmFinanceTeam
                    label is "Team"
                PrmFinanceTeam.Description
                    no label
                    display as text
            two column
                PrmTaskOwner
                    label is "TaskOwner"
                    compact format
                    select is FinanceTeamMemberActiveSelect
                PrmTaskOwner.FinanceTeamMember.TeamMember.FirstAndLastName
                    no label
                    display as text
            blank line
        header3 of "EnterYourReasonForReopening<TaskName>"
        single column
            visible when (CloseManagementGroup.ReopenTaskReasonCodeRequired)
                paragraph
                    reason code
                    reason code.Description
                        no label
                        display as text
            PrmComment
                no label
                use text area of 10 lines
        blank line
        visible when (ClosePeriodTaskFlat.DetailPeriodTask.HasClosedDependents)
            header3 of "ThisTaskHasClosedDependentTasks"
            single column
                PrmReopenDependents
                    label is "ReopenTheDependentTasks"
