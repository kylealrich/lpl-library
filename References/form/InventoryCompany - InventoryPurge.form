InventoryPurge is an ActionForm
    action is InventoryPurge
    Layout
        two column distributed
            column1 of 25%
                PrmCompany
            column2 of 75%
                PrmCompany.Name
                    no label
                    display as text
        blank line
        two column distributed
            column1 of 25%
                PrmPurgeOption
                    show up to 10 characters
            column2 of 75%
                text of "___________________________________________________________________________"
        text of "_"
        header2 of "SelectFiles_forPurge"
        two column distributed
            PrmForecasts
                label is "Forecasts"
                when value changed
                    PrmForecastYear =  blank
                    PrmForecastNumber =  blank
            visible when (PrmForecasts.No)
                paragraph
                    PrmForecastYear
                        label is "Year"
                        display only
                    PrmForecastNumber
                        label is "Number"
                        display only
            visible when (PrmForecasts.Yes)
                paragraph
                    PrmForecastYear
                        label is "Year"
                    PrmForecastNumber
                        label is "Number"
        two column distributed
            PrmPhysicalInventoryStatistics
                label is "PhysicalInventoryStatistics"
                when value changed
                    PrmPhysicalInventoryStatisticsYear =  blank
            visible when (PrmPhysicalInventoryStatistics.No)
                PrmPhysicalInventoryStatisticsYear
                    label is "Year"
                    display only
            visible when (PrmPhysicalInventoryStatistics.Yes)
                PrmPhysicalInventoryStatisticsYear
                    label is "Year"
        two column distributed
            PrmTransactionHistoryByPeriod
                label is "TransactionHistory_byPeriod"
                when value changed
                    PrmTransactionHistoryByPeriodYear =  blank
            visible when (PrmTransactionHistoryByPeriod.No)
                PrmTransactionHistoryByPeriodYear
                    label is "Year"
                    display only
            visible when (PrmTransactionHistoryByPeriod.Yes)
                PrmTransactionHistoryByPeriodYear
                    label is "Year"
        two column distributed
            PrmCostingRecords
                label is "CostingRecords"
            visible when (PrmCostingRecords.Yes)
                PrmCompany.FinanceEnterpriseGroup.PurgeCutOffDate
                    label is "CutoffDate"
                    display as text
                    mouse over text is "PurgeCutOffDateIsSetOn_Finance_Enterprise_Group:<PrmCompany.FinanceEnterpriseGroup>"
        two column distributed
            PrmHistoryTransactions
                label is "HistoryTransactions"
            visible when (PrmHistoryTransactions.Yes)
                PrmCompany.FinanceEnterpriseGroup.PurgeCutOffDate
                    label is "CutoffDate"
                    display as text
                    mouse over text is "PurgeCutOffDateIsSetOn_Finance_Enterprise_Group:<PrmCompany.FinanceEnterpriseGroup>"
        two column distributed
            PrmIssuedSerialNumbers
                label is "IssuedSerialNumbers"
            visible when (PrmIssuedSerialNumbers.Yes)
                PrmCompany.FinanceEnterpriseGroup.PurgeCutOffDate
                    label is "CutoffDate"
                    display as text
                    mouse over text is "PurgeCutOffDateIsSetOn_Finance_Enterprise_Group:<PrmCompany.FinanceEnterpriseGroup>"
        single column
            PrmLotNumbers
                label is "LotNumbers"
