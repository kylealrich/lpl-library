RTMPayment is a CompositeForm
    is primary
    title is "<BatchAndCompanyTitle>"
    context form is ReturnedPaymentContext
        background is theme color
    Actions
        action is UnreleasedRtm.CreateDistributionsFromNonARPayment
            hide when invalid
        action is UnreleasedRtm.Release
            hide when invalid
        action is UnreleasedRtm.Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is open
            label is "_"
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is UnreleasedRtm.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
            hide when invalid
        action is search
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    NonARDistributions is a Panel
        title is "NonARDebitAccounts"
        visible when (IsUnreleasedNonARPayment)
        list is NonARPaymentGLDistributionRel.RTMPaymentDistributionList
    ReleasedNonARDistributions is a Panel
        title is "NonARDebitAccounts"
        visible when (IsReleasedNonARPayment)
        list is NonARPaymentGLDistributionRel.ReleasedRTMPaymentDistributionList
    Adjustments is a Panel
        visible when (not IsNonAR)
        list is ContextAdjustmentsRel.RTMPaymentAdjustmentList
