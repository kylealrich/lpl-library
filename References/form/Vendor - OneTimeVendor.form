OneTimeVendor is a Form
    use for action CreateOneTimeVendor
    title is "One-\\TimeVendor"
    Layout
        header2 of "VendorInformation"
        three column distributed
            column1
                paragraph
                    VendorGroup
                    VendorGroup.Description
                        no label
                        display as text
            column2
                VendorName
            column3
                Vendor
                    display as text
        three column distributed
            column1
                VendorSearchName
                    label is "SearchName"
            column2
                effective date
                    label is "EffectiveDate"
            column3
                VendorClass
                    display as text
        header2 of "TaxInformation"
        three column distributed
            column1
                LegalName
            column2
                paragraph
                    TaxID
                        label is "TaxIdentificationNumber"
                        display as required when (TaxIDRequired)
            column3
                IncomeCode
        three column distributed
            column1
                VATRegistrationCountry
                    label is "V\\A\\TRegistrationCountry/\\Jurisdiction"
                    display as required when (VATRegistrationNumber entered)
            column2
                VATRegistrationNumber
                    label is "V\\A\\TRegistrationNumber"
        header2 of "Address"
        single column
            VendorAddress
                form is PostalAddressShortRequired
