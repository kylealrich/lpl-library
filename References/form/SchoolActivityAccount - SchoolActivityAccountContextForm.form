SchoolActivityAccountContextForm is a Form
    title is "<mode>ActivityAccount"
    Layout
        four column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    SchoolActivityAccount.StudentActivityAccount.ActivityLevel
                        display as text
                paragraph
                    SchoolActivityAccount.StudentActivityAccount
                        label is "Activity"
                        select is ActivityAccounts
                paragraph
                    Description
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    SchoolActivityAccount.StudentActivityAccount.StudentActivityType
                        label is "ActivityType"
                        display as text
                paragraph
                    SchoolActivityAccount.StudentActivityAccount.Description
                        no label
                        display as text
                visible when (SchoolActivityAccount.StudentActivityAccount.ActivityLevel.Detail)
                    visible when (not SchoolActivityAccount.StudentActivityAccount.StudentActivityType.Asset)
                        paragraph
                            FeeAmount
            column3
                blank line
                paragraph
                    visible when (StudentActivitySchool entered)
                        StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                            label is "Currency"
                            display as text
                visible when (HasParent)
                    paragraph
                        ParentSchoolActivityAccount.StudentActivityAccount
                            label is "ParentAccount"
                            display as text
                visible when (SchoolActivityAccount.StudentActivityAccount.ActivityLevel.Detail)
                    visible when (SchoolActivityAccount.StudentActivityAccount entered)
                        paragraph
                            SchoolActivityAccount.SubActivity
            column4
                blank line
                blank line
                visible when (HasParent)
                    paragraph
                        ParentSchoolActivityAccount.Description
                            no label
                            align as label
                            display as text
                visible when (SchoolActivityAccount.StudentActivityAccount.ActivityLevel.Detail)
                    visible when (SchoolActivityAccount.StudentActivityAccount entered)
                        paragraph
                            GroupAllSubActivities
                                align as label
        single column
            visible when (SchoolActivityAccount.StudentActivityAccount.ActivityLevel.Detail)
                GLAccount
                    compact format
            Active
        header3 of "CurrentBalances"
        paragraph
            DerivedLatestClosePeriodEndingBalance
                label is "LastPeriodEndingBalance"
            DerivedCurrentBalance
                label is "CurrentBalance"
            visible when (HasTransactionDetails)
                button of "CurrentTransactionDetails"
                    link is CurrentTransactionDetails
                    align as label
        paragraph
            DerivedCurrentReceipts
                label is "Receipts"
                display only
            DerivedCurrentDisbursements
                label is "Disbursements"
                display only
            DerivedCurrentTransfers
                label is "Transfers"
                display only
