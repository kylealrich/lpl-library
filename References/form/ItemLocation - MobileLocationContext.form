MobileLocationContext is a Form
    title is "ItemLocation"
    Layout
        two column
            column1 of 50%
                Company
                    label is "Company"
                    display as text
            column2 of 50%
                Company.Name
                    label is "CompanyName"
                    display as text
        single column
            InventoryLocation
                label is "<DerivedLocationTypeLabel>"
                display as text
            InventoryLocation.Name
                label is "LocationName"
                display as text
        two column
            column1 of 50%
                Item
                    label is "Item"
                    display as text
            column2 of 50%
                Item.StockUOM
                    label is "StockUOM"
                    display as text
        single column
            Item.Description
                label is "ItemDescription"
                display as text
            visible when (not CartParLocation)
                visible when (Company.CostingMethod.StandardCosting)
                    StandardCost
                        label is "StandardCost"
                        display as text
                visible when (not Company.CostingMethod.StandardCosting)
                    DerivedAverageCost
                        label is "AverageCost"
                        display as text
