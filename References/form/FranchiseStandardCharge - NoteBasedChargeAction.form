NoteBasedChargeAction is an ActionForm
    action is CreateNoteBasedCharge
    title is "NoteBasedCharge"
    Layout
        paragraph
            Company
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
            Description
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
        paragraph
            Active
        blank line
        two column
            column1
                text of "Options"
                    bold
                Frequency
                ProcessLevel
                TaxableFlag
                    label is "Taxable"
                TaxCode
                InterestRate
                BalanceFlag
                    label is "PrintBalanceOnStatement"
            column2
                text of "Accounts"
                    bold
                RevenueAccount
                    label is "Sales"
                    compact format
                NoteAccount
                    label is "NoteAsset"
                    compact format
                NoteAccrualAccount
                    label is "NoteAccrual"
                    compact format
                NoteAccrualOffsetAccount
                    label is "NoteAccrualOffset"
                    compact format
                AccrualAccount
                    label is "InterestAccrual"
                    compact format
                AccrualOffsetAccount
                    label is "InterestAccrualOffset"
                    compact format
