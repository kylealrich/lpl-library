MobileMainPOReceivingLine is a Form
    title is "Main"
    Layout
        single column
            ShipToLocation
                label is "ReceivingLocation"
                display as text
            visible when (CreatedBy entered)
                CreatedBy
                    display as text
            blank line
            ShipToLocation.Name
                label is "LocationName"
                display as text
            PurchaseOrderReceipt.ReceivedDate
                label is "DateAndTimeReceived"
                display as text
        single column
            BuyerMessageDisplay
                no label
                display as text
            paragraph
                visible when (IsCatchWeightQuantityOutOfTolerance)
                    CatchWeightOutOfToleranceMsg
                        no label
                        display as tag
                            color of yellow
            paragraph
                visible when (IsOutofBalance)
                    IsOutofBalancemsg
                        no label
                        display as tag
                            color of yellow
            paragraph
                visible when (not IsCatchWeightItemFulfilled)
                    StockQuantityAlertMsg
                        no label
                        display as tag
                            color of yellow
