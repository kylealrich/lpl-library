Item is a Form
    Layout
        header2 of "ItemManagement"
        two column distributed
            Item
            ItemDescription
        two column distributed
            ModelNumber
            SerialNumber
        two column distributed
            paragraph
                PurchaseDate
                InServiceDate
            ItemTaxTransactionAmount
                label is "Tax"
        two column distributed
            BarCode
                label is "BarCodeNumber"
            visible when (IsHSNSACCodeEnabled)
                paragraph
                    HSNSACCode
                    HSNSACCode.Description
                        no label
                        display as text
        paragraph
            LocationDetail.Level1
                label is "ItemLocationDetail"
            LocationDetail.Level2
                no label
            LocationDetail.Level3
                no label
