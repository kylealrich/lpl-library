InterfacePayment2Context is a Form
    title is "Payment2Interface"
    Layout
        four column
            column1
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
                paragraph
                    ReceivablePaymentImport2.Customer
                        label is "Customer"
                    ReceivablePaymentImport2.Customer.Name
                        no label
                        display as text
                XrefNbr
                    label is "CrossReferenceNumber"
                BankEntity
                visible when (CustomerMappingTableInterfaceRelExists)
                    CustomerMappingTableInterfaceRel.Customer.RepresentativeText
                        no label
                        display as text
            column2
                ReceivablePaymentImport2.SeqNbr
                    label is "SequenceNumber"
                ReceivablePaymentImport2.InterfacedCustomer
                    label is "ExternalCustomer"
                Prepayment
                BankAccountNumber
                visible when (CompanyCustomerBankAccountRelExists)
                    CompanyCustomerBankAccountRel.Customer.RepresentativeText
                        no label
                        display as text
            column3
                ReceivablePaymentImport2.TransNbr
                    label is "Payment"
                TransactionAmount
                    label is "TransactionAmount"
                PrepaymentXrefNumber
            column4
                button of "OpenInforDocumentManagement"
                    visible when (IDMUniqueID entered)
                    link is external "<DerivedIDMDocumentURL>"
                        lazy url retrieval
                    display as link
