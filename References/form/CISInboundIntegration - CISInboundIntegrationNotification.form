CISInboundIntegrationNotification is a Form
    Layout
        valid when (not YellowAlert)
            single column
                FailureEmail
                visible when (FailureEmail)
                    SuppressErrorEmailIfNoFiles
                        label is untranslatable:"Do not send error email if no files are found."
                    FailureEmailTo
                        display as required when (FailureEmail)
                    FailureEmailCc
                    FailureEmailFrom
                        display as required when (FailureEmail)
                    FailureEmailSubject
                        display as required when (FailureEmail)
                    FailureEmailBody
                        display as required when (FailureEmail)
                SuccessEmail
                visible when (SuccessEmail)
                    SuccessEmailTo
                        display as required when (SuccessEmail)
                    SuccessEmailCc
                    SuccessEmailFrom
                        display as required when (SuccessEmail)
                    SuccessEmailSubject
                        display as required when (SuccessEmail)
                    SuccessEmailBody
                        display as required when (SuccessEmail)
                paragraph
                    AddFooter
                    visible when (AddFooter)
                        UseGlobalEmailFooter
                visible when (not UseGlobalEmailFooter)
                    FooterEmailBody
                        label is untranslatable:"Email Footer"
                        display as required when (AddFooter)
