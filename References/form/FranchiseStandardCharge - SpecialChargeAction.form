SpecialChargeAction is an ActionForm
    action is CreateSpecialCharge
    title is "SpecialCharge"
    Layout
        paragraph
            Company
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
            Description
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
        paragraph
            Active
        blank line
        two column
            column1
                text of "Options"
                    bold
                Frequency
                ProcessLevel
                TaxableFlag
                    label is "Taxable"
                TaxCode
            column2
                text of "Accounts"
                    bold
                RevenueAccount
                    label is "Sales"
                    compact format
                AccrualAccount
                    label is "Accrual"
                    compact format
                AccrualOffsetAccount
                    label is "AccrualOffset"
                    compact format
