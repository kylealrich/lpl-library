Header is a Form
    Layout
        visible when (RecordExists)
            three column distributed
                display as text
                    column1
                        TrueCostConfiguration.ConfigurationCodeAndDesciption
                            label is "Configuration"
                    column2
                        AllocationControlCodeAndDescription
                            label is "True\\CostAllocationControl"
                    column3
                        paragraph distributed
                            button of "RunAllocation" with icon.send-submit
                                form invoke is TrueCostRunAllocation
                                is primary
            paragraph distributed
                visible when (SourceValidationRunDate entered)
                    SourceValidationRunDate
                        label is "SourceValidationRunDate/Time"
                        display as text
                    visible when (SourceValidationAllocation entered)
                        SourceValidationAllocation
                            label is "SourceValidationAllocation"
                            display as text
                    visible when (SourceValidationAllocationGroup entered)
                        SourceValidationAllocationGroup
                            label is "SourceValidationAllocationGroup"
                            display as text
                    visible when (IsSourceParameterEmpty)
                        TrueCostAllocationControl
                            label is "SourceValidationAllocationControl"
                            display as text
                    SourceValidationReportStatus
                        label is "Status"
                        display as text
