PrintableCurrentTransactionDetailsForm is a SummaryForm
    title is "CurrentTransactionDetails"
    Layout
        paragraph
            StudentActivityAccount
                label is "Activity"
                select is StudentActivityAccountSelectList
            Description
                no label
        blank line
        two column
            text of "LastPeriodEndingBalance"
                bold
            LatestClosePeriodEndingBalance
                no label
                right align
                display zero
        visible when (HasReceiptDetails)
            list is StudentActivityReceiptDetailRel.ReceiptDetailBySchoolList
        visible when (HasBankReceiptDetails)
            list is StudentActivityBankCreditsRel.BankReceiptDetailBySchoolList
            visible when (HasReceiptDetails)
                single column
                    CurrentReceipts
                        label is "TotalReceiptAmount"
        blank line
        visible when (HasDisbursementDetails)
            list is StudentActivityDisbursementRel.DisbursementDetailBySchoolList
        blank line
        visible when (HasTransferDetails)
            list is StudentActivityTransferDetailRel.TransferDetailBySchoolList
        visible when (HasBankTransferDetails)
            list is StudentActivityBankTransferRel.BankTransferDetailBySchoolList
        two column
            text of "CurrentBalance"
                bold
            CurrentBalance
                no label
                right align
                display zero
