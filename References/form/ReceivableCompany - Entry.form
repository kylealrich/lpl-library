Entry is a Form
    Layout
        header2 of "PaymentEntryOptions"
        four column distributed
            column1
                PaymentBatchNumbering
                    label is "AutomaticBatchNumbering"
                        left of field
                EditPaymentRemitTransactions
                    label is "ValidateRemittances"
                        left of field
            column2
                PaymentBatchTotalBalancing
                    label is "BalanceBatchControlTotals"
                        left of field
                AllowRemittanceChanges
                    label is "AllowRemittanceChanges"
                        left of field
            column3
                AllowZeroPayments
                    label is "AllowZeroPayments"
                        left of field
                VerifyDepoistDateGLDateRange
                    label is "ValidateDepositDates"
                        left of field
            column4
                paragraph
                    DerivedLastPaymentAutoBatchNumber
                        label is "LastBatch"
                        display as text
                        display zero
                    visible when (PaymentBatchNumbering)
                        button of "Change"
                            action is ChangeLastPaymentAutoBatchNumber
                            display as link
                CashOperatorRequired
                    label is "OperatorI\\DRequired"
                        left of field
        visible when (UseIDM)
            text of "_"
            four column distributed
                column1
                    GenerateIDMPaymentReceiptUponRelease
                column2
                    AllowIDMPrepaymentReceiptsOnly
        text of "_"
        four column distributed
            column1
                AllowUnreleasedPaymentApplications
                    label is "AllowUnreleasedPaymentApplications"
                        left of field
            column2
                AllowPrepaymentTax
                    label is "AllowPrepaymentTax"
                        left of field
            column3
                visible when (AllowPrepaymentTax)
                    paragraph
                        PrepaymentTaxCode
                            select is TaxCodes
                        PrepaymentTaxCode.Description
                            no label
                            display as text
        visible when (AllowPrepaymentTax)
            text of "_"
            single column
                PrepaymentTaxControlGLAccount
                    label is "PrepaymentTaxControlGLAccount"
                    compact format
        blank line
        header2 of "TransactionEntryOptions"
        four column distributed
            column1
                TransBatchNumbering
                    label is "AutomaticBatchNumbering"
                        left of field
                TransactionCurrencyOverride
                    label is "CurrencyOverride"
                        left of field
            column2
                TransBatchTotalBalancing
                    label is "BalanceBatchControlTotals"
                        left of field
                InterfaceTransDistribCreate
                    label is "CreateHistoricalDistributionsForInterface"
                        left of field
            column3
                TransactionOperatorRequired
                    label is "OperatorI\\DRequired"
                        left of field
                InterfaceTransDistribSummary
                    label is "CreateSummarizedHistoricalDistributionsForInterface"
                        left of field
            column4
                paragraph
                    DerivedLastAutoTransBatchNumber
                        label is "LastBatch"
                        display as text
                        display zero
                    visible when (TransBatchNumbering)
                        button of "Change"
                            action is ChangeLastAutoTransBatchNumber
                            display as link
        text of "_"
        four column distributed
            AutomaticManualInvoiceNumbering
                label is "AutomaticManualInvoiceNumbering"
                    left of field
            InvoiceEntryTemplate
                label is "InvoiceEntryTemplate"
            visible when (InvoiceEntryTemplate.Expanded)
                CreateInvoiceDetailsPerLine
                    label is "CreateInvoiceDetailsPerLine"
                        left of field
            visible when (Company.FinanceEnterpriseGroup.FrontEndSplits)
                FrontEndSplitARDistributions
                    label is default
                        left of field
        visible when (AutomaticManualInvoiceNumbering)
            text of "_"
            four column distributed
                column1
                    ManualInvoicePrefix
                        label is "ManualInvoicePrefix"
                column2
                    paragraph
                        DerivedLastManualInvoiceNumber
                            label is "LastManualInvoiceNumber"
                            display as text
                            display zero
                        button of "Change"
                            action is ChangeLastManualInvoiceNumber
                            display as link
                column3
                    ManualMemoPrefix
                        label is "ManualMemoPrefix"
                column4
                    paragraph
                        DerivedLastManualMemoNumber
                            label is "LastManualMemoNumber"
                            display as text
                            display zero
                        button of "Change"
                            action is ChangeLastManualMemoNumber
                            display as link
        visible when (UseIDM)
            text of "_"
            four column distributed
                column1
                    GenerateIDMReceivableInvoiceUponRelease
