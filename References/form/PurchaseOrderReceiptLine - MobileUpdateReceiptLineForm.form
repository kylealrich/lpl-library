MobileUpdateReceiptLineForm is a CompositeForm
    use for action MobileUpdateReceiptLine
    title is "UpdateReceiptLine<PurchaseOrderReceiptLine>"
    context form is MobileUpdateReceiptLineContext
        background is theme color
    Actions
        action is save
            label is "_"
            hide when invalid
    Details is a Panel
        form is MobilerReceiptLineDetail
    Safety is a Panel
        form is PO304Safety
    VendorItem is a Panel
        form is MobilePO304VendorItem
    VendorReturn is a Panel
        visible when (VendorReturn entered)
        form is MobileVendorReturn
    ReceivingDetails is a Panel
        title is "<ReceivingDetailLabel>"
        visible when (IsDetailTracked)
        list is PurchaseOrderTransactionDetailsRel.MobileAdditionalReceivingEntries
    UDIDetails is a Panel
        visible when (IsUDIRequiredAtReceipt)
        list is PurchaseOrderUDIDetailsRel.MobileUDIEntrys
