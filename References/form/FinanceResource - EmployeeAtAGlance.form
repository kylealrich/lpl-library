EmployeeAtAGlance is a Form
    title is "<PreferredSimplePresentationName>"
    Layout
        four column distributed
            column1
                EmployeeRel.ResourcePicture.File
                    no label
                    display as portrait image up to 5 lines
                        missing image is random background
                            foreground text is "<EmployeeRel.Name.Initials>"
            column2
                paragraph
                    EmployeeRel.FirstLastNameID
                        label is "Employee"
                        header3
                        display as text
                    button of icon.profile
                        link is EmployeeNav
                paragraph
                    EmployeeRel.EmployeeWorkEmailAddress
                        label is "WorkEmail"
                        display as text
                    visible when (EmployeeRel.EmployeeWorkEmailAddressExists)
                        button of icon.mail
                            link is "mailto:<EmployeeRel.EmployeeWorkEmailAddress>"
            column3
                DerivedStatusDisplay
                    no label
                    display as tag
                        color of green when (ActiveEmployee)
                        color of red when (not ActiveEmployee)
                paragraph
                    EmployeeRel.EmployeeWorkTelephone
                        label is "WorkPhone"
                        display as text
                    visible when (EmployeeRel.EmployeeWorkPhoneExists)
                        button of icon.phone
                            link is "tel:<EmployeeRel.EmployeeWorkTelephone>"
            column4
                header4 of "Preferences_onReceivingUpdates"
                paragraph
                    visible when (ResourceLandmarkNotificationsOverridden)
                        SendUpdatesAsNotification
                            label is "AsNotifications"
                            display as text
                        text of "*OverriddenByTheAdministrator-YouWillAlwaysReceiveLandmarkNotifications"
                            color of red
                    visible when (not ResourceLandmarkNotificationsOverridden)
                        SendUpdatesAsNotification
                            label is "AsNotifications"
                    visible when (ResourceEmailNotificationsOverridden)
                        SendUpdatesAsEmail
                            label is "AsEmails"
                            display as text
                        text of "*OverriddenByTheAdministrator-YouWillAlwaysReceiveEmailNotifications"
                            color of red
                    visible when (not ResourceEmailNotificationsOverridden)
                        SendUpdatesAsEmail
                            label is "AsEmails"
        header2 of "_"
        display as text
            four column distributed
                HROrganization.HROrgAndDescription
                    label is "Organization"
                Title
                Department
                JobCode
            four column distributed
                Reference1
                Reference2
                USResident
        visible when (ShowDisplayMessage)
            single column
                DisplayMessage
                    no label
                    display as text
                    use text area of 2 lines
