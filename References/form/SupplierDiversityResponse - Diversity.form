Diversity is an ActionForm
    action is Create
    title is "DiversityCode"
    Layout
        two column
            PayablesDiversityCode
                label is "DiversityCode"
            PayablesDiversityCode.Description
                no label
                display as text
        single column
            EffectiveDate
            ExpirationDate
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        visible when (not PortalSupplier)
            paragraph
                Alerts.YellowAlert
                text of "DaysBeforeTheDiversityExpirationDate"
                Alerts.RedAlert
                text of "DaysBeforeTheDiversityExpirationDate"
            visible when (WillDefaultAlertDays)
                single column
                    text of "DefaultYellowAndRedAlertDaysOnSupplierGroup;Yellow<SupplierGroup.YellowAlert>;Red<SupplierGroup.RedAlert>"
                        italics
                    text of "TheseValuesWillOnlyDefaultIfAnExpirationDateIsEntered"
            paragraph
                CertificationComplete
                Active
