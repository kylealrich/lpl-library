PaymentRequestNoticePrint is an ActionForm
    action is PaymentRequestNoticePrint
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        single column
            visible when (not Company.UseIDM)
                AlignmentForms
        single column
            visible when (not Company.UseIDM)
                ReportOption
                    label is "ReportSequence"
        blank line
        header2 of "ForReprintOnly"
        blank line
        blank line
        single column
            Date
                label is "DocumentDate"
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        single column
            text of "Or"
        single column
            DateForReprint
                label is "PrintDate"
        single column
            visible when (not Company.UseIDM)
                PrintFormat
        visible when (Company.UseIDM)
            header2 of "PrinterOption"
            paragraph
                IDMPrinter
                IDMPrinter.Description
                    no label
                    display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PaymentRequestNoticePrintReport_RDG
                PaymentRequestNoticeForm_RDG
                PaymentRequestNoticeVATForm_RDG
            column2 of 25%
                PaymentRequestNoticePrintReport_XPT
                PaymentRequestNoticeForm_XPT
                PaymentRequestNoticeVATForm_XPT
