ContactView is a Form
    title is "<DerivedName>'sContactInformation_forEvent<SourcingEvent.EventVersionString>"
    disable field options
    called out actions only
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
    Layout
        display as text
            header2 of "GeneralInformation"
            two column distributed
                column1
                    paragraph
                        SourcingEvent
                        SourcingEvent.LastVersionNumber
                            no label
                        SourcingEvent.Name
                            no label
                    paragraph
                        DerivedName
                        PrimaryTag
                            no label
                            display as tag
                                color of green
                    ContactType
                        label is "Type"
                    PrimaryContact
                    visible when (EmailAddressExists)
                        button of "<DerivedEmail>"
                            link is "mailto:<DerivedEmail>"
                            display as link
                    visible when (PhoneNumberExists)
                        DerivedPhone
                column2
                    visible when (not ContactFromRepository)
                        Address
                            form is PostalAddressMinimum
