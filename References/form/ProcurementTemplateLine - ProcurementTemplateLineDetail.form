ProcurementTemplateLineDetail is a Form
    is primary
    Layout
        visible when (not HasProcurementTemplateLine)
            single column
                TransientItemType
        display as text
            paragraph
                ProcurementGroup
                ProcurementGroup.Description
                    no label
                    display as text
            paragraph
                ProcurementTemplate
                ProcurementTemplate.Description
                    no label
                    display as text
            visible when (HasProcurementTemplateLine)
                single column
                    DisplayOrder
                        label is "LineNumber"
        blank line
        visible when (not HasProcurementTemplateLine)
            visible when (TransientItemType.FromContractLine)
                single column
                    Contract
                        select is ContractsForProcurementTemplate
                    ContractLine
                        select is ContractLinesForProcurementTemplateHelperList
            visible when (TransientItemType.SpecialItem)
                single column
                    Item
                        label is "SpecialItem"
                    SpecialItemDescription
                paragraph
                    Manufacturer
                        label is "ManufacturerCode"
                        compact format
                    ManufacturerNumber
            visible when (TransientItemType.ItemMasterItem)
                paragraph
                    Item
                    Item.Description
                        no label
                        display as text
            visible when (TransientItemType.Service)
                single column
                    Item
                        label is "ServiceItem"
                    ServiceDescription
                    ServiceCode
                    CommodityCode
        visible when (HasProcurementTemplateLine)
            display as text
                visible when (IsValidItem)
                    paragraph
                        Item
                        Item.Description
                            no label
            visible when (IsServiceItem)
                single column
                    Item
                        display as text
                    visible when (not HasContractLine)
                        ServiceDescription
                    visible when (HasContractLine)
                        ServiceDescription
                            display as text
                    ServiceCode
                        display as text
                    CommodityCode
                        display as text
            visible when (IsSpecialItem)
                single column
                    Item
                        display as text
                    visible when (not HasContractLine)
                        SpecialItemDescription
                    visible when (HasContractLine)
                        SpecialItemDescription
                            display as text
                display as text
                    visible when (ManufacturerEntered)
                        paragraph
                            Manufacturer
                                compact format
                        single column
                            ManufacturerNumber
            display as text
                visible when (HasContractLine)
                    single column
                        Contract
                        ContractLine
        paragraph
            Quantity
            UnitOfMeasure
                select is ValidBuyUnitsOfMeasure
            paragraph
                visible when (NotValidBuyUOM)
                    IsNotAValidBuyUOMmsg
                        no label
                        display as tag
                            color of yellow
            paragraph
                visible when (IsNotValidUOM)
                    IsNotAValidUnitOfMeasuremsg
                        no label
                        display as tag
                            color of yellow
        single column
            FromCompanyLocation.FromCompany
            FromCompanyLocation.FromLocation
            UseRequestingLocationAcctUnit
            DistributionAccount
                compact format
