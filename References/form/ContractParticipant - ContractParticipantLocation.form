ContractParticipantLocation is a Form
    title is "Participant"
    Layout
        paragraph
            ContractParticipant.ParticipantLocation.Company
            CompanyName
                no label
                display as text
        visible when (not Contract.ServicePurchaseType)
            paragraph
                ContractParticipant.ParticipantLocation.Location
                LocationName
                    no label
                    display as text
        visible when (not Contract.StandingOrService)
            paragraph
                ContractParticipant.ParticipantLocation.RequestingLocation
                    label is "RequestingLocation"
                RequestingLocationName
                    no label
                    display as text
        visible when (not Contract.BlanketOrStandingOrServices)
            paragraph
                ContractParticipant.ParticipantLocation.PricingGroup
                PricingGroupDescription
                    no label
                    display as text
        single column
            AccountingUnit
                label is "DefaultAccountingInformation"
                compact format
