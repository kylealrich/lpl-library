SupplierAddress is a Form
    Layout
        display as text
            header2 of "CompanyAddressInformation"
            visible when (not actor.agent(SupplierSourceId).InactiveAtSomeLevel)
                visible when (PortalContact)
                    visible when (IsPrimary)
                        single column
                            text of "Use_Update_Company_AddressToChangeAddressInformation"
                                italics
                                color of blue
                        two column distributed
                            column1
                                text of "MailingAddress"
                                    bold
                                Supplier.MailingAddress
                                    form is PostalAddressMinimum
                                Supplier.SameAsAddressAbove
                                    label is "CheckIfRemitToAddressIsTheSameAsMailingAddress"
                            column2
                                visible when (not Supplier.SameAsAddressAbove)
                                    text of "RemitToAddress"
                                        bold
                                    Supplier.BillingAddress
                                        form is PostalAddressMinimum
                    visible when (not IsPrimary)
                        two column distributed
                            column1
                                text of "MailingAddress"
                                    bold
                                Supplier.MailingAddress
                                    form is PostalAddressMinimum
                                Supplier.SameAsAddressAbove
                                    label is "CheckIfRemitToAddressIsTheSameAsMailingAddress"
                            column2
                                visible when (not Supplier.SameAsAddressAbove)
                                    text of "RemitToAddress"
                                        bold
                                    Supplier.BillingAddress
                                        form is PostalAddressMinimum
            visible when (actor.agent(SupplierSourceId).InactiveAtSomeLevel)
                visible when (PortalContact)
                    two column distributed
                        column1
                            text of "MailingAddress"
                                bold
                            Supplier.MailingAddress
                                form is PostalAddressMinimum
                            Supplier.SameAsAddressAbove
                                label is "RemitToAddressIsTheSameAsMailingAddress"
                        column2
                            visible when (not Supplier.SameAsAddressAbove)
