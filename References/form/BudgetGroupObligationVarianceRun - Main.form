Main is a Form
    title is "BudgetGroupObligationVarianceReport"
    Layout
        display as text
            four column distributed
                column1
                    Scenario.ScenarioDescription
                        label is "Scenario"
                    DeriveTemplateEditCurrency
                column2
                    BudgetTemplate
                    BudgetTemplate.Description
                        label is "Description"
                column3
                    DerivedStatus
                        display as tag
                            color of blue when (Status.Completed)
                            color of orange when (Status.InProgress)
                            color of red when (Status.DeleteInProgress)
                column4
                    visible when (not HasVariance)
                        HasVariance
                            display as tag
                                color of green when (not HasVariance)
                    visible when (HasVariance)
                        HasVariance
                            mouse over text is "LocalObligationAmountIsTheSumOfActuals,Encumbrances,Commitments,ReleasedJournalsAndPendingApprovalJournals.CubeObligationAmountIsTheSumOfActuals,Encumbrances,AndCommitments;UnpostedJournalsAreIncludedAfterPosting."
                            display as tag
                                color of red when (HasVariance)
