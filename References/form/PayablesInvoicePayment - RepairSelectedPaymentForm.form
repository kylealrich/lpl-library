RepairSelectedPaymentForm is a Form
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action ApplySelectedPayablesToCheck
    restrict action IssueBillOfExchangePayment
    restrict action UpdateIncomeCodeAndReportableAmount
    Actions
        action is SelectedForPayment.UnselectForPayment
    Layout
        three column
            column1
                paragraph
                    Company
                paragraph
                    PayablesInvoice.Invoice
                paragraph
                    Vendor
                paragraph
                    PayGroup
                paragraph
                    CashCode
                paragraph
                    BankTransactionCode
            column2
                paragraph
                    visible when (false)
                        PaymentAmount.AssignToCurrency
                    PaymentAmount.FunctionalAmount.EnteredCurrencyAmount
                paragraph
                    visible when (false)
                        RevaluedBaseAmount.AssignToCurrency
                    RevaluedBaseAmount.FunctionalAmount.EnteredCurrencyAmount
                paragraph
                    PaymentAmount.CurrencyAmount
                paragraph
                    BankCheckAmount
                paragraph
                    visible when (false)
                        DiscountAmount.AssignToCurrency
                    DiscountAmount.FunctionalAmount.EnteredCurrencyAmount
                paragraph
                    DiscountAmount.CurrencyAmount
            column3
                paragraph
                    visible when (false)
                        NetPaymentAmount.AssignToCurrency
                    NetPaymentAmount.FunctionalAmount.EnteredCurrencyAmount
                paragraph
                    NetPaymentAmount.CurrencyAmount
                paragraph
                    Status
                paragraph
                    TransactionNumber
                paragraph
                    CheckDate
