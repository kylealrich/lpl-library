TermAndConditionUpdateDraftViewContext is a Form
    title is "RequestToUpdateTermAndCondition"
    Layout
        two column
            Article
                display as text
            Article.Title
                label is "ArticleTitle"
                display as text
        single column
            TermAndCondition
                display as text
        two column
            DerivedRequestingActor
                label is "Requester"
                display as text
            paragraph
                DerivedRequesterName
                    label is "RequesterName"
                    display as text
                visible when (RequesterEmailAddressExists)
                    button of "<RequesterEmail>"
                        link is "mailto:<RequesterEmail>"
                        display as link
        visible when (DerivedRequesterPhoneNumber entered)
            single column
                DerivedRequesterPhoneNumber
                    label is "RequesterPhone"
                    display as text
