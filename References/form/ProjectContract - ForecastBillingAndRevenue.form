ForecastBillingAndRevenue is an ActionForm
    action is ForecastBillingAndRevenue
    Layout
        single column
            paragraph
                DateRange.Begin
                    label is "PostingDateSelectionRange"
                DateRange.End
                    label is "Through"
            ThroughDate
                label is "TransactionThroughDate"
            SelectionGroup
            AsOfDate
            visible when (RevenueRecognition.Separate)
                ForecastOption
            SummaryProject
                label is "<FinanceEnterpriseGroup.ProjectLabel>"
                select is ContractProjectsRel.ContractAllProjectSelect
            paragraph
                BillingGroup
                BillingGroup.Description
                    no label
                    display as text
