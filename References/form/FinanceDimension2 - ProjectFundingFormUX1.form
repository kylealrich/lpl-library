                OffsetAccount
                    label is "PayablesExpenseFinanceStructure"
                    compact format
        two column distributed
            column1
                RevenueCodeBlockOption
            column2
                RevenueRecognitionOption
        two column distributed
            column1
                RevenuePartialAccount
                    compact format
            column2
                RevenueFullAccount
                    compact format
        visible when (FundingType.ExternalGrant)
            header2 of "Dates"
            single column
                paragraph
                    EstimateCloseDate
                    ActualDate
                    SubmitDate
                    NoticeDate
                    ReceiveDate
                    ProposalDate
        two column distributed
            column1
                paragraph
                    Department
                    Department.Description
                        no label
