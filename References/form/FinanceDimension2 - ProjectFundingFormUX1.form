                    Currency
        visible when (FundingType.InternalFund)
            single column
                OffsetAccount
                    compact format
        visible when (FundingType.IntercompanyBilling)
            single column
                paragraph
                    CompanyCustomerGroup.ReceivableCompany
                        label is "PayablesCompany"
