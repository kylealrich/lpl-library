ContractSignatureRecipientForm is a Form
    is primary
    title is "SignatureRecipient"
    Layout
        display as text
            Contract
                label is "Contract"
            Name
                label is "Name"
            Email
                label is "Email"
            Status
                label is "Status"
                display as tag
                    color of green when (Status.Completed)
                    color of orange when (Status.InProgress)
                    color of brown when (Status.Draft)
                    color of red when (Status.Cancelled)
            DocumentTimeStamp
                label is "Date"
