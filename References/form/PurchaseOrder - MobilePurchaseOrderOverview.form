MobilePurchaseOrderOverview is a Form
    title is "Overview"
    Layout
        display as text
            single column
                Company.DerivedCompanyIDName
                    label is "Company"
                Vendor.DerivedVendorIDName
                    label is "Vendor"
                visible when (PurchaseFromLocation entered)
                    PurchaseFromLocation.DerivedVendorLocationIDName
                        label is "PurchaseFrom"
                ShipToLocation.DerivedInventoryLocationIDName
                    label is "ShipTo"
                visible when (PurchaseOrderRevision entered)
                    PurchaseOrderRevision
                        label is "Revision"
                        display as text
                paragraph
                    visible when (HasExistingPODocument)
                        button of "View"
                            view first LatestPODocumentRel.Attachment.File
                            label is "Document"
                            display as link
                    visible when (HasIDMDocument)
                        button of "View"
                            link is external "<DerivedIDMDocumentLink>"
                            label is "Document"
                            display as link
