ContractSubcontractorPaymentForm is a Form
    is primary
    title is "ContractSubcontractorPayment"
    Layout
        display as text
            paragraph
                Contract
                Contract.Name
                    no label
            paragraph
                ContractSubcontractor
                ContractSubcontractor.Subcontractor.SubcontractorName
                    no label
        single column
            PaymentNumber
            PaymentDate
            PaymentAmount
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
