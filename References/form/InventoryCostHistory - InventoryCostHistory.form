InventoryCostHistory is a Form
    is primary
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        display as text
            three column distributed
                column1
                    Company.DerivedCompanyDisplay
                        no label
                    paragraph
                        InventoryTransaction
                        InventoryCostHistory.LineNumber
                            label is "Line"
                    paragraph
                        Item
                        Item.Description
                column2
                    InventoryLocation.DerivedInventoryLocationIDName
                        no label
                    InventoryCostHistory.TransactionSystemCode
                    InventoryCostHistory.ComponentSequence
                        label is "ComponentSequenceNumber"
                column3
                    Company.GeneralLedgerCompany.Currency
                        label is "Currency"
                    InventoryTransaction.InventoryDocumentType
            header1 of "_"
            three column distributed
                column1
                    ReceivedDate
                        label is "UpdateDate"
                    DerivedStandardCostDisplay
                    DerivedReceivedQuantityDisplay
                    DerivedUnitCostDisplay
                column2
                    paragraph
                        GeneralLedgerDate
                            label is "PostDate"
                    DerivedAverageCostDisplay
                    DerivedUnusedQuantityDisplay
                    DerivedUNewUnitCostDisplay
                column3
                    visible when (not HasSupplementalUOM)
                        paragraph
                            DerivedUOM
                                label is "UOM"
                    visible when (HasSupplementalUOM)
                        paragraph
                            DerivedUOM
                                label is "StockUOM"
                            DerivedSupplementalUOM
                    DerivedLastReceiptCostDisplay
                    AdjustToZeroFlag
                        label is "AdjustToZero"
            single column
                OffsetAccount
                    compact format
                paragraph
                    InventoryReasonCode
                        label is "ReasonCode"
                paragraph
                    LineComment
                        label is "LineComment"
