MMaintainVendorItem is a Form
    title is "MaintainVendorItem"
    restrict action Create
    restrict action Delete
    Actions
        action is Activate
            hide when invalid
        action is Inactivate
            hide when invalid
        action is ChangeManufacturerInformation
            label is "ChangeManufacturerInfo"
            hide when invalid
        action is ReplaceAndInactivate
            label is "Replace_andInactivate"
            hide when invalid
        action is MakeDefault
            hide when invalid
        action is BackorderVendorItem
            hide when invalid
        action is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        paragraph
            ProcurementGroup
            ProcurementGroup.Description
                no label
                display as text
        two column distributed
            paragraph
                Item
                Item.Description
                    no label
                    display as text
            Item.Description2
                no label
                display as text
            Item.StockUOM
                label is "StockUOM"
                display as text
        paragraph
            Vendor
            Vendor.VendorName
                no label
                display as text
        paragraph
            VendorItem
            VendorItemDescription
        single column
        two column distributed
            VendorBuyUOM.UnitOfMeasure
                label is "BuyUOM"
                select is ValidBuyUnitsOfMeasure
            VendorPriceUOM.UnitOfMeasure
                label is "PriceUOM"
                select is ValidBuyUnitsOfMeasure
        two column distributed
            visible when (not VendorItemExists)
                Manufacturer
                    compact format
            visible when (VendorItemExists)
                Manufacturer
                    display as text
                    compact format
            visible when (not VendorItemExists)
                ManufacturerNumber
            visible when (VendorItemExists)
                ManufacturerNumber
                    display as text
        single column
            LabelerIdentificationCode
                label is "LIC"
        single column
            LastLeadtime
                display as text
            MinimumOrderQuantity
                label is "MinimumQuantityPerPOLine"
            WarrantyPeriod
                label is "WarrantyDays"
        display as text
            two column
                Active
                UseAsDefault
