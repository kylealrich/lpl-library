InvoiceApproversComposite is a CompositeForm
    title is "Invoice<Invoice>Approvers"
    context form is InvoiceApproversContext
        background is theme color
    Actions
        action is PendingApproval.ReassignApprover
            action icon is transfer
            hide when invalid
    CurrentApprover is a Panel
        visible when (ResponsiblePersonEntered)
        form is CurrentApprover
    ApproversForTeam is a Panel
        title is "CurrentApprovers"
        visible when (ResponsibleTeamEntered)
        list is FinanceTeamMembersRel.CurrentApprovers
    ApproversForRole is a Panel
        title is "CurrentApprovers"
        visible when (DisplayResponsibleRole)
        list is FinanceResourceInvApprovalRel.CurrentApprovers
    AllApprovalLevels is a Panel
        list is RoutingCode.InvoiceRoutingCodeResource set.InvoiceApproversViewOnly
    ApprovalInformation is a DashBoardPanel
        visible when (DisplayApprovalInformationPanel)
        show 4 columns
        Progress is a Panel
            triple width
            form is ProcessIndicatorForm
        History is a Panel
            visible when (AuditExists)
            list is PayablesInvoiceAudit set.PayablesInvoiceHistoryCardList
    ApprovalTracking is a Panel
        title is "ApprovalInformation"
        visible when (DisplayApprovalTrackingPanel)
        list is PayablesInvoiceAudit set.PayablesInvoiceHistoryList
