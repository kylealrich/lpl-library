POReceivingLineDetailListContext is a Form
    Layout
        display as text
            three column distributed
                column1
                    Company.DerivedCompanyIDName
                        label is "Company"
                    paragraph
                        PurchaseOrder.PurchaseOrder
                        PurchaseOrderReceipt.PurchaseOrderReceipt
                            label is "Receipt"
                        PurchaseOrderLine.LineNumber
                            label is "Line"
                column2
                    ShipToLocation.DerivedInventoryLocationIDName
                        label is "ReceivingLocation"
                    paragraph
                        PurchaseOrderReceipt.ReceivedDate
                            label is "DateAndTimeReceived"
                        CreatedBy
                column3
                    PurchaseOrderReceipt.Status
                        label is "ReceiptStatus"
                        display as tag
                            color of yellow when (PurchaseOrderReceipt.Status.Unreleased)
                            color of yellow when (PurchaseOrderReceipt.Status.CreateInProgress)
                            color of green when (PurchaseOrderReceipt.Status.Released)
                    paragraph
                        Status
                            label is "LineStatus"
                            display as tag
                                color of green when (Status.ReleasedInspected)
                                color of yellow when (Status.Entered)
                                color of yellow when (Status.ReleasedRequiresInspection)
                                color of yellow when (Status.ReleasedUnreleasedInspection)
                        visible when (HasBuyerMessage)
                            BuyerMessageDisplay
                                no label
                                display as tag
                                    color of yellow
                        paragraph
                            visible when (IsCatchWeightQuantityOutOfTolerance)
                                CatchWeightOutOfToleranceMsg
                                    no label
                                    display as tag
                                        color of yellow
                        paragraph
                            visible when (IsOutofBalance)
                                IsOutofBalancemsg
                                    no label
                                    display as tag
                                        color of yellow
                        paragraph
                            visible when (not IsCatchWeightItemFulfilled)
                                StockQuantityAlertMsg
                                    no label
                                    display as tag
                                        color of yellow
