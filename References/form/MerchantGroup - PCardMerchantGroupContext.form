PCardMerchantGroupContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (MerchantGroup not entered)
                        ProcurementGroup
                        ProcurementGroup.Description
                            no label
                            display as text
                    visible when (MerchantGroup entered)
                        ProcurementGroup.DerivedProcurementGroupName
                            label is "ProcurementGroup"
                            display as text
                paragraph
                    MerchantGroup
                        label is "MerchantGroup"
                    Description
                        label is "Description"
                        show up to 25 characters
            column2
                paragraph
                    visible when (MerchantGroup not entered)
                        ProcurementCardProgram
                        ProcurementCardProgram.Description
                            no label
                            display as text
                    visible when (MerchantGroup entered)
                        ProcurementCardProgram.DerivedCardProgramName
                            label is "ProcurementCardProgram"
                            display as text
                paragraph
                    MerchantGroupType
                        label is "MerchantGroupType"
            column3
                paragraph
                    Active
