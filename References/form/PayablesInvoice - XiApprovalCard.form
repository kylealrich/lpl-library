XiApprovalCard is a Form
    title is "Invoice"
    Layout
        display as text
            visible when (InvoiceRoutingCodeGroupEntered)
                single column
                    InvoiceRoutingCodeGroup.Name
            paragraph
                RoutingCode
                RoutingCode.Description
                button of "View"
                    link is AllApprovers
                    display as link
            visible when (DisplayResponsiblePerson)
                header4 of "CurrentApprover"
                paragraph
                    ResponsiblePerson.Employee.PresentationNameSnapshot
                        no label
                    button of "Reassign"
                        valid when (ReassignApproverValid)
                        action is PendingApproval.ReassignApprover
                paragraph
                    button of "<ResponsiblePerson.Employee.EmployeeWorkEmailAddress>"
                        link is "mailto:<ResponsiblePerson.Employee.EmployeeWorkEmailAddress>"
                        display as link
                    button of "<ResponsiblePerson.Employee.EmployeeWorkTelephone>"
                        link is "tel:<ResponsiblePerson.Employee.EmployeeWorkTelephone>"
                        display as link
            visible when (ResponsibleTeamEntered)
                paragraph
                    ResponsibleTeam
                        label is "ApprovalTeam"
                    ResponsibleTeam.Description
            visible when (DisplayResponsibleRole)
                paragraph
                    ResponsibleRole
                        label is "CurrentApprovalRole"
                    ResponsibleRole.Description
            single column
                RoutingApprovalLevel
                    label is "CurrentApprovalLevel"
            visible when (PreviousApproverExists)
                single column
                    DerivedPreviousRoutingApprover
            visible when (NextApproverExists)
                single column
                    DerivedNextRoutingApprover
            two column
                column1
                    button of "ManualApprove"
                        visible when (ApproveValid)
                        action is PendingApproval.ManualApprove
                    button of "ManualApprove"
                        visible when (ApproveValidPlus)
                        action is PendingApproval.ManualApprovePlus
                column2
                    button of "ManualReject"
                        visible when (RejectValid)
                        action is PendingApproval.ManualReject
