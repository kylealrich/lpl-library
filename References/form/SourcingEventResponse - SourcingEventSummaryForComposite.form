SourcingEventSummaryForComposite is a Form
    title is "Event#<SourcingEvent.EventVersionString>"
    Layout
        visible when (not ResponseExists)
            single column
                text of "Click_SaveIconInTheUpperRightAfterProvidingNecessaryInformation"
                    header3
                    color of green
        visible when (RequiredQuestionsNotAnsweredResponseExists)
            visible when (SomeLineRequired)
                paragraph
                    text of "<RequiredLineSupplier>"
                        bold
                        color of red
            visible when (NotAllRequiredConditionalQuestionsAnsweredResponseExists)
                paragraph
                    text of "<RequiredQuestionHeader>"
                        bold
                        color of red
                    button of "Respond_toQuestions"
                        link is SESupplierQuestionsPortal
            visible when (NonRequiredConditionalQuestionsOnlyExists)
                paragraph
                    text of "ToViewOrUpdate_EventQuestions"
                        bold
                        color of red
                    button of "Respond_toQuestions"
                        link is SESupplierQuestionsPortal
            visible when (AdHocQuestionsRequiredNotAnsweredResponseExists)
                paragraph
                    text of "<RequiredQuestionHeader>"
                        bold
                        color of red
                    button of "Respond_toQuestions"
                        link is SESupplierQuestionsPortal
            visible when (RequiredQuestionLineCondition)
                paragraph
                    text of "<RequiredQuestionLine>"
                        color of red
                single column
                    blank line
        single column
            visible when (NotSubmittedAndResponseExists)
                text of "IMPORTANT-IfYouIntendToSubmitTheResponse,PleaseClickThe_SubmitAction"
                    header2
                    bold
                    color of red
        visible when (AllHeaderConditionalQuestionsAnsweredResponseExists)
            paragraph
                text of "ToViewOrUpdate_EventQuestions"
                    bold
                    color of red
                button of "Respond_toQuestions"
                    link is SESupplierQuestionsPortal
        visible when (AdHocQuestionsRequiredAnsweredNotRepositoryResponseExists)
            paragraph
                text of "ToViewOrUpdate_EventQuestions"
                    bold
                    color of red
                button of "Respond_toQuestions"
                    link is SESupplierQuestionsPortal
        visible when (CanViewSubmittedText)
            paragraph
                text of "<SubmittedText>"
                    header2
                    bold
        visible when (WarningHeaderConditionResponseExists)
            visible when (NoResponseAOCCondition)
                paragraph
                    text of "<NoResponseAOC>"
                        bold
                        color of red
            visible when (NoResponseBidBondCondition)
                paragraph
                    text of "<NoResponseBidBond>"
                        bold
                        color of red
            single column
                blank line
        visible when (ResponseExists)
            paragraph
                text of "<ContinueRespondingLater>"
                    header2
                    italics
                text of "<SubmissionDate>"
                    header2
                    italics
        visible when (RequestToNegotiateTerms)
            visible when (NegotiationCommentAndAttachmentNotEntered)
                text of "<SourcingEvent.Company.NegotiationText>"
                    bold
                    color of blue
