ContractMilestoneForm is a Form
    title is "ContractMilestone"
    Layout
        single column
            Name
            Description
                use text area of 4 lines
        two column distributed
            column1
                Quantity
                Rate
                Amount
                visible when (Contract.NotContractTemplate)
                    PercentComplete
                    CompletionStatus
                        display as text
                visible when (PersonResponsibleExists)
                    PersonResponsible
                        display as text
                visible when (NoPersonResponsibleExistsAndMilestoneExists)
                    Contact
                        label is "PersonResponsible"
                        select is AttachEmployeesToContract
            column2
                visible when (Contract.NotContractTemplate)
                    MilestoneDate
                    paragraph
                        NumberOfDaysToFirstAlert
                            label is "FirstAlert-Yellow-Is"
                        text of "DaysBeforeMilestoneDate."
                        visible when (FirstAlertSent)
                            SentMessage
                                no label
                                display as text
                            FirstAlertTimeStamp
                                no label
                                display as text
                    paragraph
                        NumberOfDaysToSecondAlert
                            label is "SecondAlert-Red-Is"
                        text of "DaysBeforeMilestoneDate."
                        visible when (SecondAlertSent)
                            SentMessage
                                no label
                                display as text
                            SecondAlertTimeStamp
                                no label
                                display as text
                    visible when (MessagePastDue)
                        PastDueMessage
                            no label
                            display as text
                    visible when (MessageOneDay)
                        OneDayMessage
                            no label
                            display as text
