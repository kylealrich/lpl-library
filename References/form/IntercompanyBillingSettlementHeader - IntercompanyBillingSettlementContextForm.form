IntercompanyBillingSettlementContextForm is a Form
    title is "IntercompanyBillingSettlement"
    Layout
        display as text
            four column distributed
                column1
                    IntercompanyBillingSettlementHeader.SettlementID
                        label is "SettlementID"
                column2
                    Status
                column3
                    DerivedCreateDate
                        label is "EnteredOn"
                column4
                    TransientCreateActor.PersonName.PreferredFirstAndLastName
                        label is "By"
            four column distributed
                column1
                    paragraph
                        PaymentDate
                        visible when (StatusIsPendingReversalOrReversed)
                            ReversalDate
                column2
                    PostDate
                column3
                    paragraph
                        PaymentAmount
                        SettlementCurrency.Currency
                            no label
                        visible when (OutOfBalance)
                            OutOfBalanceAmount
                                label is "OutOfBalance"
                                display as tag
                                    color of red
                column4
                    paragraph
                        DerivedDetailPaymentTotal
                            label is "DetailsTotal"
                        SettlementCurrency.Currency
                            no label
            paragraph
                visible when (HasPreviewDistributions)
                    button of "PreviewDistributions"
                        link is PreviewDistributionsResults
                        display as link
                visible when (not Status.Unreleased)
                    button of "ViewDistributions"
                        link is ViewDistributions
                        display as link
