CashApplication is a Form
    title is "CashApplication"
    Layout
        two column distributed
            column1
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        ReceivableProcessingMethodChangeIndicator
                            no label
                            align as label
                    ReceivableProcessingMethod
                        label is "ProcessingMethod"
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        AutomaticCashApplicationChangeIndicator
                            no label
                            align as label
                    AutomaticCashApplication
                        label is "AutomaticCashApplication"
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        AutoTransactionRemovalChangeIndicator
                            no label
                            align as label
                    AutomaticTransactionRemoval
                        label is "AutomaticTransactionRemoval"
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        ThirdPartyChangeIndicator
                            no label
                            align as label
                    ThirdPartyPayer
                        label is "ThirdPartyPayer"
                            left of field
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        PrintChargebacksChangeIndicator
                            no label
                            align as label
                    PrintChargebacks
                        label is "PrintChargeback"
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        AutoApplyMixedSignedChangeIndicator
                            no label
                            align as label
                    ApplyMixedSignedLineItemsAutomatically
            column2
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        AppDiscountGraceDaysChangeIndicator
                            no label
                            align as label
                    ApplicationDiscountGraceDays
                        label is "DiscountGraceDays"
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        AutomaticApplicationMethodChangeIndicator
                            no label
                            align as label
                    AutomaticApplicationMethod
                        label is "ApplicationMethod"
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        ApplicationCodeChangeIndicator
                            no label
                            align as label
                    ApplicationCode
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        DetailChargebackDateChangeIndicator
                            no label
                            align as label
                    DetailChargebackDate
                paragraph
                    visible when (ActionCd.ChangeACustomer)
                        DiscountAdjustmentReasonChangeIndicator
                            no label
                            align as label
                    DiscountAdjustmentReason
                        label is "DiscountReasonCode"
                        select is ReceivableReasonCodeDiscountList
        blank line
        paragraph
            visible when (ActionCd.ChangeACustomer)
                MaximumAutoAdjustReasonCodeChangeIndicator
                    label is "MaximumShortage"
                    align as label
        paragraph
            MaximumAutoAdjustAmount.MaxAutoAmt[1]
                label is "MaxShortAmt"
            MaxAutoPcts.MaxAutoPct[1]
                label is "MaxShortPct"
            MaximumShortReasonCode.AutoReasCd[1]
                label is "ReasonCode"
                select is ReceivableReasonCodeOverShortAndChargebackDetailAndChargebackSummaryList
        paragraph
            MaximumAutoAdjustAmount.MaxAutoAmt[2]
                label is "MaxShortAmt"
            MaxAutoPcts.MaxAutoPct[2]
                label is "MaxShortPct"
            MaximumShortReasonCode.AutoReasCd[2]
                label is "ReasonCode"
                select is ReceivableReasonCodeOverShortAndChargebackDetailAndChargebackSummaryList
        paragraph
            MaximumAutoAdjustAmount.MaxAutoAmt[3]
                label is "MaxShortAmt"
            MaxAutoPcts.MaxAutoPct[3]
                label is "MaxShortPct"
            MaximumShortReasonCode.AutoReasCd[3]
                label is "ReasonCode"
                select is ReceivableReasonCodeOverShortAndChargebackDetailAndChargebackSummaryList
        blank line
        paragraph
            visible when (ActionCd.ChangeACustomer)
                MaximumOverageChangeIndicator
                    no label
                    align as label
            MaximumOverageAmount
                label is "MaxOverAmt"
            MaximumOveragePercent
                label is "MaxOverPct"
            MaximumOverageReasonCode
                label is "ReasonCode"
                select is ReceivableReasonCodeOSList
