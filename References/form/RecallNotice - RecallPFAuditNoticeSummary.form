RecallPFAuditNoticeSummary is a SummaryForm
    title is "_"
    First Page Header
        Layout
            visible when (RecallGroup.HasReportLogo)
                single column
                    RecallGroup.ReportLogo.File
                        no label
                        display as image
                header2 of "_"
    Page Header
        Layout
            header2 of "_"
                underline color of black
            single column
                text of "Notice#<RecallNotice>:_<Name>"
                    header2
                    left align
            header2 of "_"
            blank line
    Page Footer
        Layout
            two column
                text of "<current timestamp>"
                    left align
                text of "Page<page number>"
                    right align
    Layout
        header2 of "Notice#<RecallNotice>:_<Name>"
        single column
            Name
            Description
                use text area of 2 lines
            RecallType
        two column
            RecallDate
                label is "AnnouncementDate"
            RecallReceivedDate
        visible when (ManufactureDateRange entered)
            paragraph
                text of "ManufactureDateRange:"
                ManufactureDateRange.Begin
                    no label
                text of "-"
                ManufactureDateRange.End
                    no label
        visible when (DistributionDateRange entered)
            paragraph
                text of "DistributionDateRange:"
                DistributionDateRange.Begin
                    no label
                text of "-"
                DistributionDateRange.End
                    no label
        single column
            ManufacturerName
                label is "Manufacturer"
        two column
            RecallCoordinator.RecallUserName
                label is "Coordinator"
            RecallCoordinator.Employee.EmployeeWorkEmailAddress
        single column
            RecallCoordinator.Employee.EmployeeWorkTelephone
        single column
            create date
            ReleasedTimestamp
                label is "ReleaseDate"
        two column
            NotApplicableTimestamp
                label is "DateSetToNotApplicable"
            ClosedTimestamp
                label is "CloseDate"
        single column
            ApprovalTimestamp
                label is "ApprovalDate"
        form is RecallNoticeTask set.RecallPFTaskAuditForm
