SendEmail is an ActionForm
    action is SendEmail
    title is "SendEmail"
    Layout
        paragraph
            visible when (not SmartphoneDisplay)
                ToRecallUser
                    label is "To"
            visible when (SmartphoneDisplay)
                ToRecallUser
                    label is "To"
                    select is MobileRecallUsers
            ToEmail
                label is "EmailAddress"
        single column
            FromEmail
                label is "From"
                display as text
            Subject
            Content
            Attachment.File
                label is "Attachment"
