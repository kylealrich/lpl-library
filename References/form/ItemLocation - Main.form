Main is a Form
    Layout
        visible when (not ItemLocationRecordExists)
            three column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                column2
                    paragraph
                        InventoryLocation
                            label is "Location"
                        InventoryLocation.Name
                            no label
                            display as text
                column3
                    paragraph
                        valid when (Item.Active)
                            Active
                            valid when (not Item.Discontinued)
                                valid when (Active)
                                    Discontinued
            paragraph
                Item
                Item.Description
                    no label
                    display as text
        three column distributed
            column1
                paragraph
                    GeneralLedgerCategory
                        label is "InventoryLocationAccountGroup"
                    GeneralLedgerCategory.Description
                        no label
                        display as text
                DefaultTransactionUOM.UnitOfMeasure
                    label is "DefaultTransactionUOM"
                    select is ValidTransactionUnitsOfMeasure
                Manufacturer
                    compact format
                visible when (DisplayLocationStockUOM)
                    MaximumRequisitionQuantity
            column2
                AddedDate
                    label is "DateAdded"
                DefaultSourceUOM.UnitOfMeasure
                    label is "DefaultSourceUOM"
                    select is ValidBuyUnitsOfMeasure
                ManufacturerNumber
            column3
                paragraph
                    Buyer
                    Buyer.Employee.PresentationNameSnapshot
                        no label
                        display as text
                SupplementalUOM.UnitOfMeasure
                    label is "SupplementalUOM"
                    select is ValidTransactionUnitsOfMeasure
                visible when (DisplayLocationStockUOM)
                    ItemLocationStockUOM.UnitOfMeasure
                        label is "LocationStockUOM"
                        select is ValidTrackedUnitsOfMeasure
                visible when (not DisplayLocationStockUOM)
                    MaximumRequisitionQuantity
        three column distributed
            InventoryTracked
            InspectionRequired
            visible when (ItemLocationRecordExists)
                paragraph
                    valid when (Item.Active)
                        Active
                        valid when (not Item.Discontinued)
                            valid when (Active)
                                Discontinued
        three column distributed
            AllowReceipt
            NoCharge
        three column distributed
            AllowIssue
            Consignment
        header2 of "DetailTrackingInformation"
        three column distributed
            column1
                paragraph
                    BinTracked
                    visible when (not IsAWarehouseLocation)
                        PreferredBin
                    visible when (IsAWarehouseLocation)
                        PreferredBin
                            select is BinHasItemStorageLocationRel.DistributionManagementBinList
                            raise yellow alert when (ItemHasNoStorageLocation)
                                mouse over text is "Preferred_\\BinIsNotAn_\\Item_\\Storage_\\Location_\\Bin"
                paragraph
                    PreferredHoldBin
                    button of "BinReorderPolicy"
                        visible when (BinTracked)
                        list is ItemLocation.BinReorderPolicy set.BinReorderPolicyList
            column2
                LotTracked
                StorageCode
            column3
                SerialTracked
        header2 of "PhysicalInventory"
        three column distributed
            MovementClass
            CountAccuracy
            SelectForSpecialCycleCount
        three column distributed
            LastCountDate
                display as text
            LastCycleCountDate
                display as text
            FrozenForPhysicalInventory
                display only
        header2 of "TaxInformation"
        three column distributed
            paragraph
                PurchaseTaxable
                PurchaseTaxCode
            TaxableWhenSold
            SellTaxCode
        two column
            column1
                header2 of "MaterialSafetyDataSheet"
                paragraph
                    MSDSDate
                        label is "Date"
                    MSDSDocument
                        label is "Document"
                    MSDSVersion
                        label is "Version"
            column2
                header2 of "Forecasting"
                ForecastNumber
                    compact format
        visible when (not Item.ItemGroup.HideHealthcareInformation)
            header2 of "Healthcare"
            paragraph
                PatientChargeable
                ChargeNumber
                UDITracked
                    label is "UDI_/DSCSATracked"
