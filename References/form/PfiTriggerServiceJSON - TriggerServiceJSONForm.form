TriggerServiceJSONForm is a Form
    is primary
    title is "TriggerService_J\\S\\O\\N"
    Layout
        single column
            BusinessView
            PfiTriggerServiceJSON
            GenerationTime
            ServiceDefinition
        paragraph
            LineNumber
            visible when (HasLineContext)
                DerLineContext
                text of "LineNumbersInOriginalSource"
            visible when (not HasLineContext)
                text of "LineNumberInOriginalSource"
        two column
            button of "OpenInExternalViewer"
                view JSONFile
                    using mime type "application/json"
            button of "ViewSource"
                view LPLSource
                    using mime type "text/plain"
        single column
            JSON
                use text area of 20 lines
