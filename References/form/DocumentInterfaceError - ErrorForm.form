ErrorForm is a Form
    is primary
    title is "DocumentInterfaceError"
    Layout
        single column
            display as text
                DocumentInterfaceInvoice.Invoice
                ErrorType
                visible when (IsCommentError)
                    DocumentInterfaceComment.Title
                        label is "Comment"
                visible when (IsAddOnChargeError)
                    DocumentInterfaceAddOnCharge.AddOnCharge
                        label is "Comment"
                visible when (IsDistributionError)
                    DocumentInterfaceDistribution.DistributionAccount
                        label is "Comment"
                visible when (IsDetailError)
                    DocumentInterfaceDetail.Item
                        label is "Comment"
                visible when (IsPurchaseOrderError)
                    DocumentInterfacePurchaseOrder.DerivedPurchaseOrder
                ErrorMessage
                    use text area of 30 lines
