GenerationOfFrenchBillOfExchangeFile is an ActionForm
    action is GenerationOfFrenchBillOfExchangeFile
    Layout
        paragraph
            Company
                label is "RemittanceCompany"
                select is ARCompanies
            Company.Name
                no label
                display as text
        paragraph
            ProcessLevel
                select is ProcessLevels
            ProcessLevel.Name
                no label
                display as text
        paragraph
            CashCode
            CashCode.Description
                no label
                display as text
        paragraph
            BankInstCode
                label is "PaymentCode"
            BankInstCode.Description
                no label
                display as text
        paragraph
            RemitType
                label is "RemittanceType"
        paragraph
            RemitDate
                label is "RemittanceDate"
        blank line
        paragraph
            RegenerateFile
        paragraph
            RegenRemitNbr
                label is "RemittanceNumber"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                GenerationOfFrenchBillOfExchangeFileReport_RDG
            column2 of 25%
                GenerationOfFrenchBillOfExchangeFileReport_XPT
