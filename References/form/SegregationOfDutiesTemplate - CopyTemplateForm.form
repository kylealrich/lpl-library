CopyTemplateForm is an ActionForm
    action is CopyTemplate
    title is "SegregationOfDutiesTemplate"
    Layout
        single column
            ParamTemplateID
            ParamFilterBy
                display as horizontal radio buttons
            visible when (ParamFilterBy.User)
                text of "FilterBy"
                    align as label
                ParamActor
            visible when (ParamFilterBy.Role)
                text of "FilterBy"
                    align as label
                ParamRole
            visible when (ParamFilterBy.SecurityClass)
                text of "FilterBy"
                    align as label
                ParamSecurityClass
