ParLocationInterfaceForm is a Form
    use for action CreateParItem
    use for action UpdateParItem
    title is "ParLocationInterface"
    Layout
        visible when (HasErrors)
            single column
                text of "**ErrorsExist**"
                    bold
                    italics
                    color of red
        display as text
            single column
                RunGroup
        paragraph
            InventoryCompany
            InventoryCompany.Name
                no label
                display as text
        paragraph
            InventoryLocation
                label is "Location"
                select is ParLocations
            InventoryLocation.Name
                no label
                display as text
        paragraph
            Item
                display as text
            Item.Description
                no label
                display as text
        single column
            MinimumOrderQuantity
        two column
            ParShelfLocation
                label is "ShelfLocation"
            LeadtimeDays
        two column
            ReorderPoint
                label is "ParLevel"
            SuggestedReorderPoint
                label is "SuggestedParLevel"
        two column
            DefaultTransactionUOM.UnitOfMeasure
            StandardCost
        two column
            GeneralLedgerCategory
            Manufacturer
                compact format
        two column
            PatientChargeable
            ManufacturerNumber
        single column
            NoCharge
            Active
        two column
            column1
                header2 of "Replenishment"
                paragraph
                    ReplenishmentPriority
                        label is "Priority"
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
                paragraph
                    PurchaseFromLocation
                    PurchaseFromLocation.VendorLocation.VendorName
                        no label
                        display as text
            column2
                header3 of "Or"
                paragraph
                    ReplenishFrom.ReplenishFromCompany
                        label is "ReplenishFromCompany"
                    ReplenishFrom.ReplenishFromCompany.Name
                        no label
                        display as text
                paragraph
                    ReplenishFrom.ReplenishFromLocation
                        label is "ReplenishFromLocation"
                    ReplenishFrom.ReplenishFromLocation.Name
                        no label
                        display as text
                paragraph
                    ReplenishFrom.ReplenishFromBin
                        label is "ReplenishFromBin"
