VendorInformationForm is a Form
    title is "VendorInformation"
    restrict action BatchUpdateWithVertexTaxAreaId
    restrict action Create
    restrict action CreateAPClerkSmartReconVendor
    restrict action CreateOneTimeVendor
    restrict action Delete
    restrict action DeleteVertexResultsFiles
    restrict action LinkWithARCustomer
    restrict action PutAllUnpaidVendorInvoicesOnHold
    restrict action PutVendorOnHold
    restrict action ReleaseToARInterface
    restrict action RequestNewVendor
    restrict action TakeOffHold
    restrict action Update
    restrict action UpdateVertexTaxCode
    restrict action ValidateVATRegistrationNumber
    restrict action ValidateVendorVATRegistration
    Layout
        single column
            column1
                header3 of "VendorInformation"
                paragraph
                    VendorGroup
                        display as text
                    VendorGroup.Description
                        no label
                        display as text
                paragraph
                    Vendor
                        display as text
                    VendorName
                        no label
                        display as text
                blank line
                header3 of "Address"
                display as text
                    VendorAddressLine1
                        label is "Address"
                        display when blank
                    VendorAddressLine2
                        no label
                        display when blank
                    VendorAddressLine3
                        no label
                        display when blank
                    VendorAddressLine4
                        no label
                        display when blank
                    CityStateZIPDisplay
                        label is "City,_\\State,_\\Zip"
                        display when blank
                    VendorCounty
                        label is "County"
                        display when blank
                    VendorCountry
                        label is "Country/\\Jurisdiction"
                        display when blank
