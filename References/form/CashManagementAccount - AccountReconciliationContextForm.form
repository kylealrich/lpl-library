AccountReconciliationContextForm is a Form
    title is "AccountReconciliation"
    Layout
        display as text
            four column distributed
                column1
                    CashManagementAccount
                column2
                    Title
        four column distributed
            column1
                CurrentReconMatchNumber.NetBankLineAmount
                    label is "SelectedStatementLineAmount"
                    display as text
            column2
                CurrentReconMatchNumber.NetTransactionAmount
                    label is "Selected<CurrentReconMatchNumber.DerivedTransactionTypeLabel>LineAmount"
                    display as text
                visible when (CurrentReconMatchNumber.HasSecondaryReconciliationTransactions)
                    CurrentReconMatchNumber.NetSecondaryTransactionAmount
                        label is "SelectedSecondaryLineAmount"
                        display as text
            column3
                paragraph
                    CurrentReconMatchNumber.ReconciledAmount
                        label is "NetAmount"
                        display as text
                    button of "<CurrentReconMatchNumberLabel>"
                        visible when (HasCurrentReconciliationTransactions)
                        link is SummaryTransactionForm
                        display as link
                visible when (CurrentReconMatchNumber.HasSecondaryReconciliationTransactions)
                    CurrentReconMatchNumber.SecondaryReconciledAmount
                        label is "NetSecondaryAmount"
                        display as text
            column4
                OpenBankStatementLineAmount
                    display as text
        visible when (HasNonFinishedTriggers)
            text of "<first BackgroundGroupNonFinishedTriggersRel.StatusMessage>"
                italics
                color of red
