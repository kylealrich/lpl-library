CreateManualReportForm is an ActionForm
    action is CreateManualReport
    title is "CreateManualReport"
    Layout
        single column
            ReportName
            ParamBusinessClass
                select is BusinessClassSelectList
                when value changed
                    ParamBusObj.BusinessClassName =  ParamBusinessClass
            ParamAction
            visible when (false)
                ParamBusObj.BusinessClassName
            ParamBusObj.BusinessObjectKey
        header2 of "Sharing"
        single column
            Sharing
                show up to 50 characters
            paragraph
                visible when (Sharing.Group)
                    ActorGroup
                        select is ActorGroupHierarchyWithCountsSelectList
                    visible when (ActorGroup entered)
                        ActorGroup.GroupMemberExpandedRollupCount
                            label is "Count"
                            display as tag
                                color of purple
                visible when (Sharing.Role)
                    Role
                visible when (Sharing.RoleGroup)
                    RoleGroup
