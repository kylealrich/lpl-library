SplitInvoiceLine is an ActionForm
    action is SplitInvoiceLine
    Layout
        visible when (PurchaseOrderLine.ServiceCode.Amount)
            paragraph
                PurchaseOrderLine
                    label is "FromLine"
                    display as text
                PurchaseOrderLine.Item
                    display as text
                PurchaseOrderLine.VendorItem
                    display as text
            three column distributed
                text of "_"
                text of "Quantity"
                text of "Cost/OpenToMatch"
            three column distributed
                text of "Invoice:"
                EnteredQuantity
                    no label
                    display as text
                paragraph
                    EnteredUnitCost
                        no label
                        display as text
                    EnteredUOM
                        no label
                        display as text
            three column distributed
                text of "PurchaseOrder:"
                PurchaseOrderLine.Quantity
                    no label
                    display as text
                paragraph
                    PurchaseOrderLine.OpenToMatchAmount
                        no label
                        display as text
                    PurchaseOrderLine.EnteredBuyUOM
                        no label
                        display as text
            paragraph
                ToLine
                    label is "ToLine"
                    select is SameItemDifferentPurchaseOrderLineRel.PurchaseOrderLinesList
                PostDate
            three column distributed
                text of "PurchaseOrder:"
                ToLine.Quantity
                    no label
                    display as text
                paragraph
                    ToLine.OpenToMatchAmount
                        no label
                        display as text
                    ToLine.EnteredBuyUOM
                        no label
                        display as text
            three column distributed
                text of "NewInvoiceLine:"
                ToQuantity
                    no label
                    display as text
                paragraph
                    ToUnitCost
                        no label
                    ToLine.EnteredBuyUOM
                        no label
                        display as text
        visible when (not PurchaseOrderLine.ServiceCode.Amount)
            paragraph
                PurchaseOrderLine
                    label is "FromLine"
                    display as text
                PurchaseOrderLine.Item
                    display as text
                PurchaseOrderLine.VendorItem
                    display as text
            three column distributed
                text of "_"
                text of "Quantity/OpenToMatch"
                text of "UnitCost"
            three column distributed
                text of "Invoice:"
                EnteredQuantity
                    no label
                    display as text
                paragraph
                    EnteredUnitCost
                        no label
                        display as text
                    EnteredUOM
                        no label
                        display as text
            three column distributed
                text of "PurchaseOrder:"
                PurchaseOrderLine.OpenToMatchQuantity
                    no label
                    display as text
                paragraph
                    PurchaseOrderLine.EnteredUnitCost
                        no label
                        display as text
                    PurchaseOrderLine.EnteredBuyUOM
                        no label
                        display as text
            paragraph
                ToLine
                    label is "ToLine"
                    select is SameItemDifferentPurchaseOrderLineRel.PurchaseOrderLinesList
                PostDate
            three column distributed
                text of "PurchaseOrder:"
                ToLine.OpenToMatchQuantity
                    no label
                    display as text
                paragraph
                    ToLine.EnteredUnitCost
                        no label
                        display as text
                    ToLine.EnteredBuyUOM
                        no label
                        display as text
            three column distributed
                text of "NewInvoiceLine:"
                ToQuantity
                    no label
                paragraph
                    ToUnitCost
                        no label
                        display as text
                    ToLine.EnteredBuyUOM
                        no label
                        display as text
