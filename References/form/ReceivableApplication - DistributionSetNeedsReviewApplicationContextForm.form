DistributionSetNeedsReviewApplicationContextForm is a Form
    title is "ReceivableApplication"
    Layout
        two column distributed
            column1
                header3 of "Transaction"
                display as text
                    paragraph
                        ReceivableApplication.TransType
                            label is "Type"
                        ReceivableApplication.Invoice
                        ReceivableInvoiceDetailRel.ReceivableInvoiceDetail.PaymentSeq
                            label is "Sequence"
                        Company
                        ReceivableInvoiceDetailRel.Customer
                header3 of "Application"
                paragraph
                    DerivedFundApplicationTypeShort
                        label is "Type"
                        display as text
                        raise red alert when (MustBeDeletedHasNonWriteoffAdjustments)
                            mouse over text is "ApplicationHasNon-WriteoffAdjustments.MustDeleteApplicationAndApplyAgainWithoutTheAdjustments."
                        raise yellow alert when (MustBeDeletedHasCompanyFundApplyMismatch)
                            mouse over text is "MustDelete_ApplicationAndApplyAgainAfterEnabling_Specify_Distribution_MixForBothTransactionAndCreditCompanies"
                    Status
                        display as text
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                        display as text
                    visible when (not Writeoff)
                        ApplicationAmount.CurrencyAmount
                            label is "Amount"
                            display as text
                    visible when (Writeoff)
                        TotalAdjustments
                            label is "Amount"
                            display as text
                    ApplicationCurrency
                        no label
                        display as text
            column2
                display as text
                    header3 of "Credit"
                    paragraph
                        CreditTransaction.CreditType
                            label is "Type"
                        CreditTransaction.CreditNumber
                            label is "Number"
                        CreditTransaction.CreditSequence
                            label is "Sequence"
                        CreditTransaction.CreditCompany
                        CreditTransaction.CreditCustomer
                            label is "Customer"
                        visible when (not Writeoff)
                            CreditTransaction.CreditApplicationAmount.CurrencyAmount
                                label is "Amount"
                            DerivedCreditCurrency
                                no label
                    visible when (AllowSelectDistributionSet)
                        blank line
                        header3 of "Distribution_\\Set"
                        visible when (not IsDistributionSetTypeCreditMemoApply)
                            paragraph
                                TransientDistributionSetState
                                    label is "Status"
                                    display as tag
                                        color of red when (TransientDistributionSetState.OutOfBalance)
                                        color of yellow when (TransientDistributionSetState.ReadyForProcessing)
                                        color of green when (TransientDistributionSetState.AwaitingApplicationClose)
                                        color of green when (TransientDistributionSetState.Posted)
                                visible when (TransientDistributionSetStateNotProcessed)
                                    DerivedTransactionDistributionSetSum
                                        label is "SelectedSum"
                                        display as text
                                    DerivedFundApplyTransactionDifference
                                        label is "Difference"
                                        display as text
                        visible when (IsDistributionSetTypeCreditMemoApply)
                            visible when (not TransientDistributionSetStateNotProcessed)
                                paragraph
                                    TransientDistributionSetState
                                        label is "Status"
                                        display as tag
                                            color of red when (TransientDistributionSetState.OutOfBalance)
                                            color of yellow when (TransientDistributionSetState.ReadyForProcessing)
                                            color of green when (TransientDistributionSetState.AwaitingApplicationClose)
                                            color of green when (TransientDistributionSetState.Posted)
                            visible when (TransientDistributionSetStateNotProcessed)
                                paragraph
                                    CreditAppliedDistributionSetStateForTransactionText
                                        label is "TransactionStatus"
                                        display as tag
                                            color of yellow when (CreditAppliedDistributionSetStateForTransactionReadyForProcessing)
                                            color of red
                                    DerivedTransactionDistributionSetSum
                                        label is "SelectedSum"
                                        display as text
                                    DerivedFundApplyTransactionDifference
                                        label is "Difference"
                                        display as text
                                paragraph
                                    CreditAppliedDistributionSetStateForCreditMemoText
                                        label is "CreditMemoStatus"
                                        display as tag
                                            color of yellow when (CreditAppliedDistributionSetStateForCreditMemoReadyForProcessing)
                                            color of red
                                    DerivedCreditDistributionSetSum
                                        label is "SelectedSum"
                                        display as text
                                    DerivedFundApplyCreditDifference
                                        label is "Difference"
                                        display as text
                    visible when (false)
                        TransientInvoiceDetailTypeForApplication
                        TransientInvoiceDetailSequenceForApplication
                        TransientReceivableApplicationSequenceForContext
                        TransientReceivableCompanyForContext
                        TransientReceivableBatchForContext
                        TransientReceivableInvoiceForContext
                        TransientFundDistributionSetState
