TermContext is a Form
    title is "TermAndCondition"
    Layout
        three column distributed
            column1
                display as text
                    paragraph
                        ProcurementGroup.RepresentativeText
                        Article.RepresentativeText
                    paragraph
                        TermDisplayOrder
                        TermLevel
            column2
                display as text
                    paragraph
                        visible when (TermAndCondition entered)
                            RepresentativeText
                        Active
                        visible when (TermAndCondition entered)
                            Status
                display as text
                    paragraph
                        visible when (MultipleDraftUpdateExists)
                            text of "ApprovalRequestsExistAndAreReadyToBeSubmitted."
                            button of "View"
                                visible when (CreationApproved)
                                link is DraftTermAndConditionUpdateNav
                                display as link
                        visible when (SingleDraftUpdateExists)
                            text of "AnApprovalRequestExistsAndIsReadyToBeSubmitted."
                            button of "View"
                                visible when (CreationApproved)
                                link is DraftTermAndConditionUpdateNav
                                display as link
                        visible when (MultiplePendingUpdateExists)
                            text of "ApprovalRequestsHaveBeenSubmitted."
                            button of "View"
                                visible when (CreationApproved)
                                link is TermAndConditionUpdateApproval
                                display as link
                        visible when (SinglePendingUpdateExists)
                            text of "AnApprovalRequestHasBeenSubmitted."
                            button of "View"
                                visible when (CreationApproved)
                                link is TermAndConditionUpdateApproval
                                display as link
                    paragraph
                        visible when (ChildUpdatesExist)
                            text of "ApprovalRequestsExistForTermLevelsBelowThisOne;RequestReadyToBeSubmitted"
            column3
                visible when (DisplayButtons)
                    paragraph
                        button of "UpdateTermAndCondition"
                            valid when (UpdateDescriptionActionValidForButton)
                            action is UpdateDescription
                            is primary
                        button of "AddAttachment"
                            valid when (UpdateDescriptionActionValidForButton)
                            action is AddAttachment
                            is primary
                        button of "DeleteAttachment"
                            visible when (DeleteAttachmentValid)
                            action is DeleteAttachment
                            is primary
