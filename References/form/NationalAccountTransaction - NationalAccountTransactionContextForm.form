NationalAccountTransactionContextForm is a Form
    Layout
        four column distributed
            column1
                NationalAccount.Company.RepresentativeText
                    label is "NACompany"
                    display as text
                button of "<InvoiceDetailGroupField>"
                    link is ReceivableInvoice
                    label is "Invoice"
                    header4
                    bold
                    display as link
            column2
                display as text
                    NationalAccount.Customer.RepresentativeText
                        label is "NACustomer"
                    ReceivableInvoiceDetail.DerivedDescription
            column3
                display as text
                    Company.RepresentativeText
                    paragraph
                        TransactionDate
                        TransientGeneralLedgerDate
            column4
                display as text
                    Customer.RepresentativeText
                        display as text
                    paragraph
                        ReceivableInvoiceDetail.TransientSignedTransactionAmount
                            label is "InvoiceAmount"
                                header4
                                bold
                            header4
                            bold
                        visible when (ReceivableInvoiceDetail.TransientSignedOpenAmount entered)
                            ReceivableInvoiceDetail.TransientSignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of red
                                header4
                                bold
                                color of red
                            visible when (ReceivableInvoiceDetail.IsNonBaseCurrency)
                                OriginalCurrency
                                    label is "_"
                                    header4
                                    color of red
                        visible when (ReceivableInvoiceDetail.TransientSignedOpenAmount not entered)
                            ReceivableInvoiceDetail.TransientSignedOpenAmount
                                label is "Open"
                                    header4
                                    bold
                                    color of green
                                header4
                                bold
                                color of green
                            visible when (ReceivableInvoiceDetail.IsNonBaseCurrency)
                                OriginalCurrency
                                    label is "_"
                                    header4
                                    color of green
