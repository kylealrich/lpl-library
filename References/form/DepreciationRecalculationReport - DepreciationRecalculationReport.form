DepreciationRecalculationReport is an ActionForm
    action is DepreciationRecalculationReport
    Layout
        header2 of "SelectionOptions"
        paragraph
            Book
            Book.Description
                no label
                display as text
        paragraph
            RecalcBegDate
                label is "FromDepreciationRecalculation"
            RecalcEndDate
                label is "ToDepreciationRecalculation"
        paragraph
            BegDate
                label is "FromInServiceDate"
            EndDate
                label is "ToInServiceDate"
        paragraph
            Company
                select is Companies
            Company.GeneralLedgerCompany.Name
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            LocationName
                label is "Location"
                select is Locations
            LocationName.Description
                no label
                display as text
        paragraph
            Division
                select is Divisions
            Division.Description
                no label
                display as text
        paragraph
            AssetType
                label is "Type"
                compact format
                select is AssetTypesWithinCompany
            AssetType.Description
                no label
                display as text
        paragraph
            Property
            Category
        header2 of "AdditionalOptions"
        paragraph
            Simulated
            FullyDepr
                label is "FullyDepreciated"
        paragraph
            Method
                select is DepreciationMethods
            Method.Description
                no label
                display as text
        single column
            Life
        blank line
        paragraph
            Asset
                select is AllAssets
            Asset.Description
                no label
                display as text
        single column
            TagNumber
                label is "Tag"
        paragraph
            AssetGroup
                select is AssetGroups
            AssetGroup.Description
                no label
                display as text
        single column
            CreatorId
        header2 of "OutputOptions"
        single column
            PageBreak
        single column
            header3 of "PrintTotals"
        single column
            header4 of "Sequence"
            blank line
            RecalcDateOption
                label is "DepreciationRecalculationDate"
            paragraph
                LeaseOption
                    label is "Lease"
            paragraph
                LocOption
                    label is "Location"
            paragraph
                DivOption
                    label is "Division"
            paragraph
                TypeOption
                    label is "Type\\,Sub"
            paragraph
                AstgrpOption
                    label is "AssetGroup"
            paragraph
                AssetOption
                    label is "Asset"
            header4 of "Miscellaneous"
            blank line
            paragraph
                CatOption
                    label is "Category"
            paragraph
                PropOption
                    label is "Property"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DepreciationRecalculationReportReport_RDG
            column2 of 25%
                DepreciationRecalculationReportReport_XPT
