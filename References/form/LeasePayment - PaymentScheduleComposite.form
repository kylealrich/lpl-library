PaymentScheduleComposite is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is PaymentScheduleContext
        background is theme color
    Main is a Panel
        form is Miscellaneous
    PaymentDetail is a Panel
        list is LeasePaymentDetailByDueDateRel.PaymentSchedules
    RecurringPayments is a Panel
        visible when (not IsMonthToMonthRenewal)
        list is RecurringLeasePaymentDetailRel.RecurringPaymentsList
    ViewAllPayments is a Panel
        list is LeasePaymentDetailRel.ViewAllPayments
