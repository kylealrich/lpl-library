CreateContractWizardRebate is an ActionForm
    action is WizardCreate
    title is "CreateContractRebate"
    Layout
        display as text
            single column
                Contract.RepresentativeText
                ContractRebateType
            three column
                Contract.ExpirationDate
        visible when (GrowthRebate)
            four column
                ContractRebateType
                    label is "RebateType"
                Active
                QualifierChanged
                    label is "QualifierModified"
                    display as text
                DerivedQualifierModifiedReloadRebateInvoices
                    no label
                    display as text
            paragraph
                CalculateGrowthInSpendFromLastYearToThisYearOnly
                    label is "YearlyGrowthBasis:"
                DerivedFieldDescriptionForGrowthBasis
                    no label
                    display as text
            paragraph
                CalculateRebateAmountOnAllSpendForQualifyingContracts
                DerivedFieldDescriptionForCalculationBasis
                    no label
                    display as text
        visible when (LoyaltyRebate)
            four column
                ContractRebateType
                    label is "RebateType"
                Active
                QualifierChanged
                    label is "QualifierModified"
                    display as text
            paragraph
                CalculateRebateAmountOnAllSpendForQualifyingContracts
                DerivedFieldDescriptionForCalculationBasis
                    no label
                    display as text
        visible when (FixedRebate)
            three column
                ContractRebateType
                    label is "RebateType"
                Active
        visible when (NotGrowthAndNotLoyaltyRebateAndNotFixedRebateAmount)
            three column
                ContractRebateType
                    label is "RebateType"
                Active
                QualifierChanged
                    label is "QualifierModified"
                    display as text
        visible when (NotGrowthAndNotLoyaltyRebateAndNotFixedRebateAmount)
            three column
                RebatePercent
                    label is "RebatePercent"
                PotentialPeriodRebateAmount
                    label is "\\or_RebateAmountPerRebatePeriod"
            paragraph
                CalculateRebateAmountOnAllSpendForQualifyingContracts
                DerivedFieldDescriptionForCalculationBasis
                    no label
                    display as text
        three column
            Frequency
            FirstRebateDueDate
                label is "FirstReportingDueDate"
            FirstPaymentDate
                label is "FirstPaymentExpectedDate"
                display as text
        visible when (Contract.PaymentDueDaysEntered)
            display as text
                paragraph
                    Contract.PaymentDueDays
                        no label
                    text of "DefaultDaysToAddToRebateReportingDueDateForPaymentExpectedDate"
