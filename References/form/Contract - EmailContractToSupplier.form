EmailContractToSupplier is an ActionForm
    action is EmailContractToSupplier
    Layout
        single column
            PrmFromEmail
                label is "From"
        two column
            PrmToEmail
                label is "To"
            text of "ToEnterMultipleEmailAddresses,SeparateThemWithAComma"
                italics
        single column
            PrmCcEmail
                label is "Cc"
            PrmBccEmail
                label is "Bcc"
            PrmSubject
                label is "Subject"
                use text area of 1 lines
            PrmEmailContents
                label is "EmailContents"
                use text area of 5 lines
            visible when (RedlineApprovals)
                PrmIncludeRedlineDocumentsWithEmail
                    label is "IncludeLatestRedlineDocument"
            visible when (not IDMRedlineApprovals)
                PrmIncludeLatestContractDocument
                    label is "IncludeLatestContractDocument"
            PrmIncludeContractAttachmentsWithEmail
                label is "IncludeContractAttachmentsWithEmail"
            PrmIncludeContractLineAttachmentsWithEmail
                label is "IncludeContractLineAttachmentsWithEmail"
