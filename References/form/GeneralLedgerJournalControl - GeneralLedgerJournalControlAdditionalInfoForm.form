GeneralLedgerJournalControlAdditionalInfoForm is a Form
    title is "Main"
    Layout
        three column distributed
            paragraph
                AccountingEntity
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
                visible when (false)
                    AccountingEntity.AccountingUnitZoneBalancing
            paragraph
                visible when (not FinanceEnterpriseGroup.CurrencyLedgerJournals)
                    Ledger
                visible when (FinanceEnterpriseGroup.CurrencyLedgerJournals)
                    Ledger
                        select is GeneralLedgerJournalControlList
            paragraph
                visible when (EnterJournalType)
                    NewJournalControlType
                        label is "JournalType"
                visible when (not EnterJournalType)
                    JournalType
                        display only
        three column distributed
            visible when (not TransactionsExistAndUnreleased)
                PostingDate
                    label is "PostDate"
            visible when (TransactionsExistAndUnreleased)
                PostingDate
                    label is "PostDate"
                    display only
                    raise blue alert when (TransactionsExist)
                        mouse over text is "TransactionsExist;PleaseDeleteTransactionsToChangePostingDateOrCreateANewJournal"
            Description
            visible when (IsValidForElimination)
                EligibleForElimination
                    label is "ForElimination"
        three column distributed
            TransactionDate
            System
            UniqueJournalID
        three column distributed
            CurrencyTable
            Currency
            HoldCode
        three column distributed
            GeneralLedgerEvent
                label is "GlobalLedgerEvent"
            visible when (not TransactionsExist)
                visible when (Status.Unreleased)
                    visible when (Ledger.CurrencyLedger)
                        PrimaryLedger
                    visible when (not Ledger.CurrencyLedger)
                        PrimaryLedger
                            display only
            visible when (TransactionsExist)
                PrimaryLedger
                    display only
            Reference
        three column distributed
            paragraph
                DefaultAutoReverse
                    label is "AutoReverse"
                AutoReverseDate
            visible when (PendingBudgetEdit)
                text of "<PendingBudgetEditText>"
                    bold
                    color of red
                    align as label
            visible when (AccountingEntity.AccountingUnitZoneBalancing)
                BaseZoneAccountingUnit
                    label is "<FinanceEnterpriseGroup.AccountingUnitLabel>BaseZone"
                    select is ZoneAccountingUnits
            visible when (DimensionIsZoned)
                BaseZoneDimension1
                    label is "<FinanceEnterpriseGroup.FinanceDimension1Label>BaseZone"
                    select is ZoneDimension1
            ApprovalCode
            IsAIntercompanyBillingJournal
