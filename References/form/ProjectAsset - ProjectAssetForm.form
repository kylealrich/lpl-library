ProjectAssetForm is a Form
    is primary
    title is "<FinanceEnterpriseGroup.ProjectLabel>Asset"
    Layout
        three column
            column1
                Project
                    label is "<FinanceEnterpriseGroup.ProjectLabel>"
                Asset
                Asset.Company
                    label is "AssetCompany"
                    display as text
                Asset.AssetCategory
                    label is "Category"
                    display as text
                paragraph
                    Asset.AssetType
                        label is "Type/Subtype"
                        display as text
                        compact format
                Asset.AssetAccountGroup
                    label is "AccountGroup"
                    display as text
            column2
                Project.Description
                    no label
                    display as text
                Asset.Description
                    no label
                    display as text
                Asset.Company.GeneralLedgerCompany.Name
                    label is "Name"
                    display as text
                paragraph
                    Asset.DerivedStatus
                        label is "Status"
                        display as text
                blank line
                Asset.AssetAccountGroup.Description
                    label is "Description"
                    display as text
            column3
                blank line
                visible when (HasAssets)
                    button of "Asset"
                        link is Assets
                        display as link
