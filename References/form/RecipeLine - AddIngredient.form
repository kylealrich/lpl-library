AddIngredient is an ActionForm
    action is AddIngredient
    Layout
        paragraph
            Sequence
                label is "Sequence"
            IngredientType
                label is "Type"
        single column
            TransientIngredientUnitOfMeasure.Item
                select is IngredientItems
            TransientIngredientUnitOfMeasure.Item.Description
                label is "Description"
                display as text
        two column
            column1
                QuantityInRecipeUOM
                    label is "RecipeQuantity"
            column2
                TransientIngredientUnitOfMeasure.RecipeUnitOfMeasure
                    select is ValidItemRecipeUOM
