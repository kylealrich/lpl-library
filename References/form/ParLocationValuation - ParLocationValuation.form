ParLocationValuation is an ActionForm
    action is ParLocationValuation
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        blank line
        three column
            column1
                paragraph
                    Location
                        label is "ParLocation"
                        select is ParLocationsSelect
                    Location.Name
                        no label
                        display as text
            column2
                text of "\\or"
                    bold
            column3
                paragraph
                    ReportGrp
                        label is "ReportGroup"
                    ReportGrp.Name
                        no label
                        display as text
        blank line
        single column
            UpdatePar
                label is "UpdateParValue"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ParLocationValuationReport_RDG
            column2 of 25%
                ParLocationValuationReport_XPT
