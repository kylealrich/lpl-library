InvoiceLine is a CompositeForm
    is primary
    title is "<DerivedFormTitleForInvLine>"
    context form is InvoiceLineInquiryContext
        background is theme color
    LineDetail is a Panel
        form is Detail
    LineOptions is a Panel
        form is LineOptions
    TaxInformation is a Panel
        form is TaxInquiry
    InvoiceCharges is a Panel
        title is "AddOnCharges"
        list is BillingInvoiceAddOnCharge set.InvoiceLineLevelAddOnCharges
    Comments is a Panel
        list is BillingInvoiceCommentsRel.BillingInvoiceCommentsList
            helper list is BillingStandardCommentHeaderRel.BillingStandardCommentHeaderForCopyList
                action is CopyComments
    UserFields is a Panel
        form is UserFields
    Attachments is a Panel
        list is BillingInvoiceLineAttachment set.primary
