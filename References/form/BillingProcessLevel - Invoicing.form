Invoicing is a Form
    Layout
        header2 of "PrefixDefaults"
        two column
            TransientInvoicePrefix
                label is "Invoice"
            TransientRecurringInvoicePrefix
                label is "Recurring"
        two column
            TransientCreditMemoPrefix
                label is "CreditMemo"
            TransientCreditMemoPrintOption
                label is "PrintOption"
        blank line
        header2 of "LastNumbersUsed"
        three column
            TransientLastInvoice
                label is "Invoice"
                display as text
            TransientLastCreditMemo
                label is "CreditMemo"
                display as text
            TransientLastRecurringInvoice
                label is "Recurring"
                display as text
        blank line
        header2 of "AdditionalOptions"
        four column
            column1
                InvoiceEditOption
                    label is "RunInvoiceVerification"
                InterfaceCost
                    label is "PostCost_forInterfaceInvoices"
            column2
                CashOnDeliveryOption
                DiscountAddOnCharge
            column3
                TermsAddOnCharge
                TermsFreight
            column4
                PrintFullInvoiceNumber
        single column
            TaxCalulationAndPrinting
                label is "TaxPrintOption"
        blank line
        visible when (not Company.UseIDM)
            header2 of "DocumentTemplate"
            single column
                paragraph
                    BillingInvoiceDocument
        visible when (Company.UseIDM)
            header2 of "IDMDocumentTemplates"
            single column
                paragraph
                    BillingInvoiceProcessLevelIDMTemplate
                        select is BillingInvoiceIDMTemplate
                    button of "<BillingInvoiceProcessLevelIDMTemplate.Name>"
                        link is external "<BillingInvoiceProcessLevelIDMTemplate.RetrieveUrl>"
                        display as link
            blank line
            two column
                column1
                    header2 of "IDMEmailTemplates"
                    paragraph
                        BillingInvoiceEmailTemplate
                            select is BillingInvoiceIDMEmailTemplate
                        button of "<BillingInvoiceEmailTemplate.Name>"
                            link is external "<BillingInvoiceEmailTemplate.RetrieveUrl>"
                            display as link
                column2
                    header2 of "IDMEmailSubject"
                    paragraph
                        BillingInvoiceEmailSubject
                        visible when (BillingInvoiceEmailSubject entered)
                            text of "Sample:<DerivedBillingInvoiceIDMEmailSubject>"
