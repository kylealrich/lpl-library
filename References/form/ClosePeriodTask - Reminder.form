Reminder is an ActionForm
    action is Reminder
    title is "Reminder"
    Layout
        header3 of "ReminderAbout_<TaskName>_For_<ClosePeriod.CloseCalendarPeriod>_<ClosePeriod.CloseCalendar>"
        single column
            TaskStatus
                label is "Status"
                display as text
        five column
            ScheduleForTask.BeginDate
                label is "ScheduledBegin"
                display as text
            ScheduleForTask.BeginTime
                no label
                display as text
            ScheduleForTask.DueDate
                label is "Due"
                display as text
            ScheduleForTask.DueTime
                no label
                display as text
            ScheduleForTask.LevelOfEffort
                label is "Effort"
                display as text
        visible when (EstimateForTask entered)
            five column
                EstimateForTask.BeginDate
                    label is "EstimatedBegin"
                    display as text
                EstimateForTask.BeginTime
                    no label
                    display as text
                EstimateForTask.DueDate
                    label is "Due"
                    display as text
                EstimateForTask.DueTime
                    no label
                    display as text
                EstimateForTask.LevelOfEffort
                    label is "Effort"
                    display as text
        visible when (ActualForTask entered)
            five column
                ActualForTask.BeginDate
                    label is "ActualBegin"
                    display as text
                ActualForTask.BeginTime
                    no label
                    display as text
                ActualForTask.DueDate
                    label is "Due"
                    display as text
                ActualForTask.DueTime
                    no label
                    display as text
                ActualForTask.LevelOfEffort
                    label is "Effort"
                    display as text
        header3 of "EnterDetailsAboutThisReminder"
        single column
            paragraph
                ReminderBeginDate
                    label is "BeginDate"
                ReminderDueDate
                    label is "DueDate"
        single column
            ReminderDescription
                label is "Description"
            ReminderNotes
                label is "Notes"
                use text area of 5 lines
        header3 of "AddAnAttachmentOrURL"
        single column
            ReminderAttachment
                label is "Attachment"
            ReminderLink
                label is "URL"
