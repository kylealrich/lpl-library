Main is a Form
    Layout
        three column distributed
            column1
                paragraph
                    InvoiceNumber
                paragraph
                    TaxableAmount
                paragraph
                    ChargedTax
            column2
                paragraph
                    InvoiceDate
                paragraph
                    InvoiceAmount
            column3
                display as text
                    paragraph
                        TaxRate
                        CalculatedTaxAmt
                    paragraph
                        OutsideThreshold
                            label is "OutsideThreshold"
                    paragraph
                        VarianceAmount
        two column distributed
            column1
                paragraph
                    ShipToTaxCode
                        label is "ShipTo"
                    ShipToTaxCode.Description
                    button of "ShipToAddress"
                        link is NavToShipToAddress
                        display as link
                visible when (ShipToAddressEntered)
                    paragraph
                        ShipToAddressSummary
                            label is "ShipToAddress"
                            show up to 40 characters
                paragraph
                    ShipFromTaxCode
                        label is "ShipFrom"
                    button of "ShipFromAddress"
                        link is NavToShipFromAddress
                        display as link
                visible when (ShipFromAddressEntered)
                    paragraph
                        ShipFromAddressSummary
                            label is "ShipFromAddress"
                            show up to 40 characters
            column2
                paragraph
                    BillToTaxCode
                        label is "BillTo"
                    button of "BillToAddress"
                        link is NavToBillToAddress
                        display as link
                visible when (BillToAddressEntered)
                    paragraph
                        BillToAddressSummary
                            no label
                            show up to 40 characters
                paragraph
                    BillFromTaxCode
                        label is "BillFrom"
                    button of "BillFromAddress"
                        link is NavToBillFromAddress
                        display as link
                visible when (BillFromAddressEntered)
                    paragraph
                        BillFromAddressSummary
                            no label
                            show up to 40 characters
                LineitemError
                    display as text
        visible when (ReturnedErrorNumber entered)
            header4 of "Results"
            single column
                ReturnedErrorNumber
                    display as text
                ReturnedErrorMessage
                    display as text
                    use text area of 1 lines
                    show up to 100 characters
