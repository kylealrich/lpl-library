CountryBankInformationForm is a Form
    is primary
    title is "Country/\\JurisdictionBankInformation"
    Layout
        single column
            paragraph
                Country
                Country.Name
                    display as text
            text of "CheckFieldsToDisplayForThisCountry/\\jurisdiction"
                bold
            text of "IfNoCountry/\\jurisdictionIsEnteredInformationWillBeUsedAsDefault"
                bold
            blank line
            BankAccountValidationType
            paragraph
                UseBankEntity
                    label is "BankEntity"
                visible when (UseBankEntity)
                    BankEntityLabel
                    ConfirmBankEntity
            paragraph
                UseBankAccountNumber
                    label is "BankAccountNumber"
                visible when (UseBankAccountNumber)
                    BankAccountNumberLabel
                    ConfirmBankAccountNumber
            UseBankAccountType
                label is "BankAccountType"
            UseBankCurrency
                label is "BankCurrency"
            UseCrossBorderIdentifier
                label is "CrossBorderIdentifier"
            UseSwiftID
                label is "SWIFT/BIC"
            UseBankingCode
                label is "BankingCode"
            UseBankID
                label is "BankID"
            UseAssignmentNumber
                label is "AssignmentNumber"
            UseGiroNumber
                label is "GiroNumber"
            UseBACSReference
                label is "BACSReference"
            UseBACSName
                label is "BACSName"
            UseCreditCardNumber
                label is "CreditCardNumber"
