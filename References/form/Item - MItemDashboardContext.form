MItemDashboardContext is a Form
    Layout
        single column
            visible when (UseLinkedImage)
                ImageURL
                    display as image
            visible when (not UseLinkedImage)
                Picture.File
                    no label
                    display as full image up to 5 lines
                        missing image is random background
                            foreground text is "<ItemDescriptionAbbreviation>"
        two column distributed
            column1
                paragraph
                    ItemGroup
                        display as text
                    ItemGroup.Description
                        no label
                        display as text
                Item
                    display as text
                paragraph
                    Description
                        display as text
                    Description2
                        no label
                        display as text
            column2
                Active
                    display as text
                StockUOM
                    display as text
        single column
            Description3
                label is "LongDescription"
                display as text
                use text area of 3 lines
        two column distributed
            Reference1
                display as text
            Reference2
                display as text
        paragraph
            Manufacturer
                label is "Manufacturer"
                display as text
                compact format
            Manufacturer.Description
                no label
                display as text
        two column distributed
            ManufacturerNumber
                display as text
            GenericName
                display as text
