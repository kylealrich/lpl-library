MVendorDiversityCodeCertification is a Form
    title is "VendorDiversityCodes"
    Layout
        single column
            paragraph
                visible when (not RecordExists)
                    VendorGroup
                visible when (RecordExists)
                    VendorGroup
                        display as text
                VendorGroup.Description
                    no label
                    display as text
            paragraph
                visible when (not RecordExists)
                    Vendor
                visible when (RecordExists)
                    Vendor
                        display as text
                Vendor.VendorName
                    no label
                    display as text
            paragraph
                visible when (not RecordExists)
                    VendorLocation
                        label is "Location"
                visible when (RecordExists)
                    VendorLocation
                        label is "Location"
                        display as text
                VendorLocation.VendorName
                    no label
                    display as text
        single column
            paragraph
                visible when (not RecordExists)
                    DiversityCode
                visible when (RecordExists)
                    DiversityCode
                        display as text
                DiversityCode.Description
                    no label
                    display as text
        three column
            DiversityEffectiveDate
            DiversityExpirationDate
                label is "ExpirationDate"
            DaysToExpire
                display as text
        single column
            ReviewDate
        visible when (EffectiveDateEntered)
            two column
                column1
                    paragraph
                        Alerts.YellowAlert
                        text of "DaysBeforeTheDiversityCodeExpirationDate"
                column2
                    paragraph
                        Alerts.RedAlert
                        text of "DaysBeforeTheDiversityCodeExpirationDate"
        two column
            CertificationComplete
            Active
        single column
            Attachment.File
                label is "Attachment"
