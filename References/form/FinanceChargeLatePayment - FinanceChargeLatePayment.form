FinanceChargeLatePayment is an ActionForm
    action is FinanceChargeLatePayment
    Layout
        paragraph
            Company
                when value changed
                    IsoLocale =  Company.LanguageCode
            Company.Name
                no label
                display as text
        single column
            AsOfDate
            FutureApps
                label is "QualifyFutureApplications"
            UpdateOption
        paragraph
            ProcessLevel
                label is "DefaultProcessLevel"
            ProcessLevel.Name
                no label
                display as text
        single column
            text of "Or"
                bold
        paragraph
            SelProcLvl
                label is "SelectProcessLevel"
            SelProcLvl.Name
                no label
                display as text
        single column
            PmtCrOption
                label is "Payment\\/\\CreditOption"
        paragraph
            FinGlCode
                label is "FinanceG\\LCode"
                select is ARCodes
            FinGlCode.Description
                no label
                display as text
        header4 of "CycleCodes"
        three column distributed
            FinCycle.FinCycle[1]
                no label
            FinCycle.FinCycle[2]
                no label
            FinCycle.FinCycle[3]
                no label
        three column distributed
            FinCycle.FinCycle[4]
                no label
            FinCycle.FinCycle[5]
                no label
            FinCycle.FinCycle[6]
                no label
        three column distributed
            FinCycle.FinCycle[7]
                no label
            FinCycle.FinCycle[8]
                no label
            FinCycle.FinCycle[9]
                no label
        single column
            FinCycle.FinCycle[10]
                no label
        single column
            IsoLocale
                label is "Locale"
                compact format
            TextCode
                label is "PaymentNoticeTextCode"
                compact format
            IncludeInt
                label is "IncludeFinanceDebitMemos"
            DueDate
            SuppressZeroLines
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                FinanceChargeLatePaymentReport_RDG
                FinanceChargeLatePaymentNetMethodReport_RDG
                FinanceChargeLatePaymentErrorReport_RDG
            column2 of 25%
                FinanceChargeLatePaymentReport_XPT
                FinanceChargeLatePaymentNetMethodReport_XPT
                FinanceChargeLatePaymentErrorReport_XPT
