MobileMainFormWithTemplate is a Form
    title is "Invoice"
    Layout
        visible when (RecordExists)
            single column
                DerivedCompanyRepresentativeText
                    label is "Company"
                    display as text
                button of "<Vendor.RepresentativeText>"
                    visible when (RecordExists)
                    link is MobileVendor
                    label is "Vendor"
                    display as link
                Vendor.CurrentAddressRel.FullAddressDisplay
                    label is "VendorAddress"
                    display as text
            paragraph
                VoucherNumberDisplay
                    label is "Voucher"
                    display as text
                InvoiceType
                    display as text
                button of "ViewInvoice" with icon.invoicing
                    view first PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
                    display as link
            header2 of "Processor"
            display as text
            paragraph
                APClerk.Employee.ResourcePicture.File
                    display as portrait image up to 2 lines
                        missing image is random background
                            foreground text is "<APClerk.Employee.Name.Initials>"
                APClerk.Employee.Name.PreferredFirstAndLastName
                    no label
                    display as text
                button of "Reassign"
                    visible when (ReassignAPClerkValid)
                    action is ReassignAPClerk
                    is primary
            paragraph
                button of icon.mail
                    visible when (APClerk.Employee.EmployeeWorkEmailAddressExists)
                    link is "mailto:<APClerk.Employee.EmployeeWorkEmailAddress>"
                button of "<APClerk.Employee.EmployeeWorkEmailAddress>"
                    visible when (APClerk.Employee.EmployeeWorkEmailAddressExists)
                    link is "mailto:<APClerk.Employee.EmployeeWorkEmailAddress>"
                    display as link
            paragraph
                button of icon.phone
                    visible when (APClerk.Employee.EmployeeWorkPhoneExists)
                    link is "tel:<APClerk.Employee.EmployeeWorkTelephone>"
                button of "<APClerk.Employee.EmployeeWorkTelephone>"
                    visible when (APClerk.Employee.EmployeeWorkPhoneExists)
                    link is "tel:<APClerk.Employee.EmployeeWorkTelephone>"
                    display as link
            visible when (MatchProcessType.ReceiptMatch)
                header2 of "MatchInformation"
                two column table
                    column1
                        button of "<FirstPurchaseOrder>"
                            link is MobilePurchaseOrderInfo
                            label is "PurchaseOrder"
                            display as link
                        FirstPurchaseOrder.PurchaseOrderDate
                            label is "PurchaseOrderDate"
                            display as text
                    column2
                        Buyer.Employee.Name.PreferredFirstAndLastName
                            label is "Buyer"
                            display as text
                        FirstPurchaseOrder.MobileTotalWithCurrencyDisplay
                            label is "OrderAmount"
                            display as text
