MobileRecallNotice is a CompositeForm
    title is "Notice<DerivedRecallNotice>"
    context form is MobileRecallContext
    restrict action Pending.Create
    Actions
        action is save
            label is "_"
        action is refresh
            label is "_"
    General is a Panel
        form is MobileRecallGeneral
    Products is a Panel
        title is "Products<ProductCount>"
        visible when (DisplayRecallProductDetails)
        list is RecallProduct set.MobileRecallProductDetails
    Products2 is a Panel
        title is "Products<ProductCount>"
        visible when (DisplayRecallProductItemDetails)
        list is RecallProduct set.MobileRecallProductItemDetails
    EquipmentProducts is a Panel
        title is "Products<ProductCount>"
        visible when (Equipment)
        list is RecallProduct set.MobileRecallProductEquipmentDetails
    Tasks is a Panel
        title is "Tasks<TaskCount>"
        list is RecallNoticeTask set.MobileRecallNoticeTaskDetails
            helper list is RecallUserHelperListRel.MobileNoticeTaskHelperList
                action is AttachToRecallNoticeTask
    References is a Panel
        title is "References<ReferenceCount>"
        list is RecallNoticeReference set.MobileRecallNoticeReferences
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is RecallComment set.MobileRecallComments
    QAndA is a Panel
        title is "Q&A<QandACount>"
        visible when (HasRecallQandA)
        list is RecallNoticeQandA set.MobileRecallNoticeQAndAList
    Domains is a Panel
        title is "Domains<DomainCount>"
        list is RecallNoticeDomain set.MobileRecallNoticeDomains
            helper list is RecallDomainHelperListRel.RecallDomainHelperList
                action is AttachToRecallNoticeDomain
    Notifications is a Panel
        title is "Notifications<NotificationCount>"
        list is RecallNotification set.MobileRecallNotifications
            helper list is RecallUserHelperListRel.RecallNotificationHelperList
                action is AttachToRecallNotification
    ActionSummary is a Panel
        title is "ResolutionSummary"
        visible when (HasResolutions)
        list is RecallProductItemAction set.MobileRecallProductItemActionSummary
    ApprovalHistory is a Panel
        visible when (HasWorkunit)
        form is ApprovalHistory
