CashForecastCategoryForm is a Form
    is primary
    title is "CashForecastCategory"
    Layout
        paragraph
            CashForecast
            CashForecast.Description
                no label
                display as text
        paragraph
            CashForecastCategory.CashTransactionCategory
                select is CashTransactionCategorySelect
            CashForecastCategory.CashTransactionCategory.Description
                no label
                display as text
        paragraph
            DisplayOrder
                display as text
            NewDisplayOrder
        header2 of "TransactionDetails"
        single column
            ForecastCreationParameter.ForecastCalculation
                display as horizontal radio buttons
        visible when (ForecastCreationParameter.ForecastCalculation.Historical)
            paragraph
                ForecastCreationParameter.ActualDateRange.Begin
                    label is "ActualStartDate"
                    mouse over text is "Date_range_to_pull_historical_amounts_from"
                    display as required when (ForecastCreationParameter.ForecastCalculation.Historical)
                text of "-"
                ForecastCreationParameter.ActualDateRange.End
                    label is "EndDate"
                    display as required when (ForecastCreationParameter.ForecastCalculation.Historical)
            paragraph
                ForecastCreationParameter.HistoricalCalculationOption
                    mouse over text is "Calculation_to_perform_on_actual_amounts"
                    display as required when (ForecastCreationParameter.ForecastCalculation.Historical)
                ForecastCreationParameter.CalculationAdjustment
                    mouse over text is "PercentageByWhich_to_increase_actual_amounts"
        visible when (ForecastCreationParameter.ForecastCalculation.Calculated)
            paragraph
                ForecastCreationParameter.EnteredCalculationOption
                    display as required when (ForecastCreationParameter.ForecastCalculation.Calculated)
                visible when (ForecastCreationParameter.EnteredCalculationOption.DayOfWeek)
                    ForecastCreationParameter.DayOfWeek
                        display as required when (ForecastCreationParameter.EnteredCalculationOption.DayOfWeek)
                visible when (ForecastCreationParameter.EnteredCalculationOption.DayOfMonth)
                    ForecastCreationParameter.DayOfMonth
                        display as required when (ForecastCreationParameter.EnteredCalculationOption.DayOfMonth)
            visible when (ForecastCreationParameter.EnteredCalculationOption.Date)
                single column
                    ForecastCreationParameter.CalculationMethod
                paragraph
                    ForecastCreationParameter.ForecastDateArray.ForecastDate[1]
                        label is "ForecastDate1"
                    ForecastCreationParameter.ForecastDateArray.ForecastDate[2]
                        label is "Date2"
                    ForecastCreationParameter.ForecastDateArray.ForecastDate[3]
                        label is "Date3"
                    ForecastCreationParameter.ForecastDateArray.ForecastDate[4]
                        label is "Date4"
            visible when (ForecastCreationParameter.EnteredCalculationOption.DateRange)
                single column
                    ForecastCreationParameter.CalculationMethod
                paragraph
                    ForecastCreationParameter.ForecastDateRange.Begin
                        label is "StartDate"
                    text of "-"
                    ForecastCreationParameter.ForecastDateRange.End
                        label is "EndDate"
            visible when (ForecastCreationParameter.EnteredCalculationOption.DayOfWeek)
                single column
                    ForecastCreationParameter.CalculationMethod
                paragraph
                    ForecastCreationParameter.ForecastDateRange.Begin
                        label is "StartDate"
                    text of "-"
                    ForecastCreationParameter.ForecastDateRange.End
                        label is "EndDate"
            visible when (ForecastCreationParameter.EnteredCalculationOption.DayOfMonth)
                single column
                    ForecastCreationParameter.CalculationMethod
                paragraph
                    ForecastCreationParameter.ForecastDateRange.Begin
                        label is "StartDate"
                    text of "-"
                    ForecastCreationParameter.ForecastDateRange.End
                        label is "EndDate"
            single column
                ForecastCreationParameter.ForecastAmount
                    display as required when (ForecastCreationParameter.ForecastCalculation.Calculated)
