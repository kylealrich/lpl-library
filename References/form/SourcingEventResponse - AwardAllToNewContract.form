AwardAllToNewContract is an ActionForm
    action is Submitted.AwardAllNewContract
    title is "AwardToNewContract"
    Layout
        display as text
            two column
                Company
                SourcingEvent.EventVersionString
                    label is "Event#"
            two column
                NotifiedSupplier.Supplier
                NotifiedSupplier.Supplier.SupplierName
            two column
                NotifiedSupplier.SupplierSourceId
                    label is "SupplierContact"
                NotifiedSupplier.SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContactName"
            single column
                first SourcingEventLineResponse set.SourcingEventLine.OutputType
        single column
            text of "<SelectedEventLinesMessage>"
                header3
                color of green
        single column
            ReasonCode
                label is "AwardReason"
                select is BuyerAwardReasonsSelect
            visible when (RequestToNegotiateTerms)
                TermsHaveBeenNegotiated
        header2 of "ContractInformation"
        two column
            ContractType
                select is BuyerContractTypesSelect
            ContractClassification
                select is BuyerContractClassificationSelect
            ContractSubtype
                select is BuyerContractSubtypeSelect
            ContractSubclassification
                select is BuyerContractSubclassificationSelect
        three column
            EffectiveDate
            ExpirationDate
            AwardQtyToLifetimeMaxQty
                label is "CopyAwardQuantityToLifetimeMaximumQuantity"
        single column
            visible when (SourcingEvent.AllowResponseInOtherCurrency)
                visible when (DifferentResponseCurrency)
                    visible when (not VendorHasInvoiceCurrency)
                        CurrencyCode
                            label is "ContractCurrency"
                    visible when (VendorHasInvoiceCurrency)
                        CurrencyCode
                            label is "ContractCurrency"
                            display as text
            visible when (not DifferentResponseCurrency)
                visible when (not SourcingEvent.AllowResponseInOtherCurrency)
                    CurrencyCode
                        label is "ContractCurrency"
                        display as text
        visible when (not AwardAllNonStandingContracts)
            two column
                ScheduleFrequency
                MaxReleaseNumber
        header2 of "ParticipantInformation"
        visible when (AwardAllNonServiceContracts)
            single column
                ParticipantGroup
                text of "Or"
        paragraph
            Participant.Company
            visible when (AwardAllNonServiceContracts)
                Participant.Location
            visible when (AwardAllNonStandingOrServiceContracts)
                Participant.RequestingLocation
                    label is "RequestingLocation"
            Participant.DefaultAccountingInformation
                compact format
