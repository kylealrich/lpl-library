PurchaseOrderInterfaceForm is a CompositeForm
    is primary
    title is "PurchaseOrderRequest"
    context form is PurchaseOrderInterfaceContext
        background is theme color
    Actions
        navigation is ViewRequisition
            action icon is preview
            hide when invalid
        action is SelectForPurchaseOrder
            hide when invalid
        action is AddToPurchaseOrder
        action is Cancel
            action icon is reject
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is refresh
            label is "_"
        action is save
            label is "_"
    LineDetails is a Panel
        form is InterfaceDetail
    LineOptions is a Panel
        form is More
    Comment is a MultiListPanel
        title is "Comments<CommentCount>"
        list is PurchaseOrderInterfaceCommentRel.PurchaseOrderInterfaceComments
        list is RequisitionCommentRel.RQCommentsForPOInterface
            visible when (HasRequisitionComment)
        list is RequisitionLineCommentRel.RQLineCommentsForPOInterface
            visible when (HasRequisitionLineComment)
    UserFields is a Panel
        form is UserFieldsForm
