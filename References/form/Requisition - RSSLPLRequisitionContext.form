RSSLPLRequisitionContext is a Form
    Layout
        display as text
            four column distributed
                column1
                    visible when (RSSLPLDisplayCompany)
                        Company.RepresentativeText
                            label is "Company"
                                header4
                            header3
                    visible when (RSSLPLDisplayRequestingLocationAndCompanyHidden)
                        RequestingLocation.RequestingLocationNameID
                            header3
                    visible when (RSSLPLHideCompanyAndRequestingLocation)
                        RSSLPLDerivedTotalCurrencyField
                            label is "Total"
                                header4
                            header3
                column2
                    visible when (RSSLPLDisplayCompanyAndRequestingLocation)
                        RequestingLocation.RequestingLocationNameID
                            header3
                    visible when (RSSLPLDisplayRequestingLocationAndCompanyHidden)
                        RSSLPLDerivedTotalCurrencyField
                            label is "Total"
                                header4
                            header3
                    visible when (RSSLPLDisplayCompanyAndRequestingLocationHidden)
                        RSSLPLDerivedTotalCurrencyField
                            label is "Total"
                                header4
                            header3
                    visible when (RSSLPLHideCompanyAndRequestingLocation)
                        paragraph
                            DerivedStatusMessage
                                label is "Status"
                                    header4
                                display as tag
                                    color of blue when (IsUnreleased)
                                    color of yellow when (NeedsApproval)
                                    color of green when (Status.Processed)
                                    color of red when (IsRejectedStatus)
                                    color of yellow when (Status.InProcess)
                                    color of yellow when (IsReleaseInProgress)
                                    color of yellow when (IsCreateInProgress)
                column3
                    visible when (RSSLPLDisplayCompanyAndRequestingLocation)
                        RSSLPLDerivedTotalCurrencyField
                            label is "Total"
                                header4
                            header3
                    visible when (RSSLPLDisplayRequestingLocationAndCompanyHidden)
                        paragraph
                            DerivedStatusMessage
                                label is "Status"
                                    header4
                                display as tag
                                    color of blue when (IsUnreleased)
                                    color of yellow when (NeedsApproval)
                                    color of green when (Status.Processed)
                                    color of red when (IsRejectedStatus)
                                    color of yellow when (Status.InProcess)
                                    color of yellow when (IsReleaseInProgress)
                                    color of yellow when (IsCreateInProgress)
                    visible when (RSSLPLDisplayCompanyAndRequestingLocationHidden)
                        paragraph
                            DerivedStatusMessage
                                label is "Status"
                                    header4
                                display as tag
                                    color of blue when (IsUnreleased)
                                    color of yellow when (NeedsApproval)
                                    color of green when (Status.Processed)
                                    color of red when (IsRejectedStatus)
                                    color of yellow when (Status.InProcess)
                                    color of yellow when (IsReleaseInProgress)
                                    color of yellow when (IsCreateInProgress)
                column4
                    visible when (RSSLPLDisplayCompanyAndRequestingLocation)
                        paragraph
                            DerivedStatusMessage
                                label is "Status"
                                    header4
                                display as tag
                                    color of blue when (IsUnreleased)
                                    color of yellow when (NeedsApproval)
                                    color of green when (Status.Processed)
                                    color of red when (IsRejectedStatus)
                                    color of yellow when (Status.InProcess)
                                    color of yellow when (IsReleaseInProgress)
                                    color of yellow when (IsCreateInProgress)
        paragraph
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditFailure)
                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                    bold
                    color of red
        paragraph
            visible when (HasLinesWithSpecialHandling)
                paragraph
                    SpecialHandlingMessageForMultipleLines
                        no label
                        display as tag
                            color of yellow
                    button of "<SpecialHandlingMessageForListMultipleLines>"
                        link is SpecialHandlingNav
                        display as link
