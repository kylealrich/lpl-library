LeasePaymentContext is a Form
    title is "LeasePaymentBalance"
    Layout
        four column distributed
            column1
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Lease
                    Lease.Description
                        no label
                        display as text
                paragraph
                    Vendor
                    Vendor.VendorName
                        no label
                        display as text
                paragraph
                    LeasePaymentBalance
            column2
                BeginningBalanceAmount
                    label is "BeginningBalance"
                BalanceAmount
                    label is "Balance"
            column3
                BeginningPrincipalBalance
                PrincipalBalanceAmount
                    label is "PrincipalBalance"
                PrincipalTaxAmount
                    label is "PrincipalTax"
            column4
                BeginningBalanceInterest
                InterestBalanceAmount
                    label is "InterestBalance"
                InterestTaxAmount
                    label is "InterestTax"
