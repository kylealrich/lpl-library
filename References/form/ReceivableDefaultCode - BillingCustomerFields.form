BillingCustomerFields is a Form
    Layout
        two column distributed
            paragraph
                BillingCustomerCode
                    label is "CustomerCode"
                BillingCustomerCode.Description
                    no label
                    display as text
            paragraph
                PriceList
                    compact format
                    select is PriceLists
        two column distributed
            paragraph
                Territory
                Territory.Description
                    no label
                    display as text
            paragraph
                Carrier
                Carrier.VendorName
                    no label
                    display as text
        two column distributed
            paragraph
                BillingFreightCode
                    label is "FreightCode"
            paragraph
                BrokenCaseCharge
        two column distributed
            paragraph
                SalesRepresentative2
                SalesRepresentative2.Name
                    no label
                    display as text
            paragraph
                CommissionSplitPercentage
                    label is "CommissionSplit"
        paragraph
            BillingLineItemRequired
                label is "InvoicingLineItems"
