PurchaseOrderDocumentTemplate is a Form
    Layout
        single column
            UseIDMTemplate
        single column
            text of "PurchaseOrderTemplate"
                header2
        single column
            header3 of "Document"
            visible when (UseIDMTemplate)
                paragraph
                    IDMTemplate
                        label is "PurchaseOrder"
                        select is PurchaseOrderIDMTemplate
                    button of "<IDMTemplate.Name>"
                        link is external "<IDMTemplate.RetrieveUrl>"
                        display as link
            visible when (not UseIDMTemplate)
                paragraph
                    PurchaseOrderDocument
                        label is "PurchaseOrder"
                        select is ActivePurchaseOrderDocumentsRel.PurchaseOrderDocumentListByVendorWithoutPurchaseFrom
                    button of "<PurchaseOrderDocument.PurchaseOrderDocumentTemplate.Title>"
                        link is external "<PurchaseOrderDocument.PurchaseOrderDocumentTemplate>"
                        display as link
