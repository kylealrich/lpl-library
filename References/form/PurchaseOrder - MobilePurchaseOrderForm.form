MobilePurchaseOrderForm is a CompositeForm
    title is "PurchaseOrder<PurchaseOrder>"
    context form is MobilePurchaseOrderContext
        background is theme color
    restrict action Unreleased.Create
    restrict action CreateInvoicePurchaseOrder
    restrict action Resequence
    restrict action Unreleased.QuickCreate
    restrict action Unreleased.CreateFromBlanket
    restrict action Unreleased.CreateFromTemplate
    restrict action Unreleased.CreateFromPurchaseOrder
    restrict action Released.ManualApprove
    restrict action Released.ManualReject
    restrict action Released.ManualUnrelease
    restrict action Released.CancelPurchaseOrder
    restrict action Released.CancelRemainingPurchaseOrder
    restrict action Closed.ClosedPOUpdate
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Actions
        action is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is MobileHeaderDetails
    Lines is a Panel
        list is PurchaseOrderLinesRel.MobileAllPurchaseOrderLines
    Totals is a Panel
        form is MobilePurchaseOrderAmountTotals
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is PurchaseOrderComment set.MobilePurchaseOrderCommentList
