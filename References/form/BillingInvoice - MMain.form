MMain is a Form
    title is "Main"
    Layout
        header2 of "_"
        paragraph
            Customer
                select is CustomerContextCompanySelectList
            Customer.Name
                no label
                display as text
        paragraph
            BillingProcessLevel
                label is "ProcessLevel"
                select is ProcessLevels
            BillingProcessLevel.Name
                no label
                display as text
        paragraph
            Location
            Location.Name
                no label
                display as text
        single column
            BillingInvoiceSource
                label is "InvoiceSource"
                display as text
        paragraph
            ReasonCode
            ReasonCode.Description
                no label
                display as text
        paragraph
            BillingInvoiceType
                label is "InvoiceType"
            BillingInvoiceType.Description
                no label
                display as text
        visible when (ParallelReferenceEnabled)
            single column
                ParallelReference
                    display as text
        single column
            InvoiceDate
                label is "Date"
        two column distributed
            Currency
                label is "Currency"
            Currency.Description
                no label
                display as text
        two column distributed
            CurrencyTable
            CurrencyTable.Description
                no label
                display as text
        single column
            CurrencyRate
                label is "CurrencyRate"
            Revalue
                label is "CurrencyRevaluation"
            visible when (Company.ReceivableCompany.UseEWayBillNumber)
                EWayBillNumber
            DerivedVatRegistrationNumber
                display as text
            CertificationNumber
            CertificationDate
        header2 of "ShipTo"
        paragraph
            CustomerShipTo
                label is "ShipTo"
            CustomerShipTo.Name
                no label
                display as text
        single column
            display as text
                CustomerShipTo.ShipToAddress.DeliveryAddress.AddressLine1
                    label is "StreetAddress"
                CustomerShipTo.ShipToAddress.DeliveryAddress.AddressLine2
                    no label
                CustomerShipTo.ShipToAddress.DeliveryAddress.AddressLine3
                    no label
                CustomerShipTo.ShipToAddress.DeliveryAddress.AddressLine4
                    no label
        two column distributed
            display as text
                CustomerShipTo.ShipToAddress.Municipality
                    label is "City"
                CustomerShipTo.ShipToAddress.StateProvince
                    label is "State/Provinance"
                CustomerShipTo.EmailAddress
                CustomerShipTo.ShipToAddress.Country
                CustomerShipTo.ShipToAddress.PostalCode
                    label is "PostalCode"
                CustomerShipTo.Contact
        single column
            display as text
                CustomerShipTo.ShipToAddress.Region
                    label is "County"
