ContractLineItemDetail is a Form
    title is "ItemDetails"
    Layout
        three column distributed
            column1
                header3 of "Details"
                UNSPSCCode
                    label is "UNSPSC"
                    compact format
                paragraph
                    MajorPurchasingClass
                        label is "PurchasingClass"
                        select is MajorActivePurchasingClasses
                        show up to 10 characters
                    MinorPurchasingClass
                        no label
                        show up to 10 characters
                paragraph
                    MajorInventoryClass
                        label is "InventoryClass"
                        show up to 10 characters
                    MinorInventoryClass
                        no label
                        show up to 10 characters
                paragraph
                    MajorPPEClass
                        label is "PPEClass"
                        show up to 10 characters
                    MinorPPEClass
                        no label
                        show up to 10 characters
                PersonalProtectiveEquipment
                CriticalItem
                GenericName
                Latex
            column2
                header3 of "ItemCodes"
                Sku
                    label is "SKU"
                Upc
                UccEanUpn
                    select is ItemsbyUniversalProductNumber2
                HazardCode
            column3
                header3 of "UserFields"
                UserField1
                    label is "ItemAlpha1"
                UserField2
                    label is "ItemAlpha2"
                UserField3
                    label is "ItemAlpha3"
                UserField4
                    label is "ItemAlpha4"
                UserField5
                    label is "ItemAlpha5"
                UserFieldN1
                    label is "ItemNumeric1"
                UserFieldN2
                    label is "ItemNumeric2"
                UserFieldN3
                    label is "ItemNumeric3"
        three column
            Sterile
            Reprocessed
            Pharmaceutical
            SingleUse
            Dressing
            Reusable
            Analytics
        single column
            ConsignCode
                label is "BillCode"
        visible when (SpecialItem)
            header2 of "SpecialHandling"
            two column distributed
                column1
                    paragraph
                        SpecialHandlingCode
                            label is "SpecialHandlingCode"
                            select is ActiveSpecialHandlingCodes
                        SpecialHandlingCode.Description
                            no label
                            display as text
                    visible when (SpecialHandlingCode.SpecialHandlingCodeExists)
                        SpecialHandlingInstructions
                            use text area of 5 lines
            single column
                visible when (SpecialHandlingCode.SpecialHandlingCodeExists)
                    SpecialHandlingCode.TimeSensitive
                visible when (SpecialHandlingCode.IsTimeSensitive)
                    HandlingTimeInMinutes
                        label is "HandlingTimeInMinutes"
