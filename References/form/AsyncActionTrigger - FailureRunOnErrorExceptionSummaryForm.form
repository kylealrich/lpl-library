FailureRunOnErrorExceptionSummaryForm is a SummaryForm
    title is "RunOnErrorExceptionStackTrace<AsyncActionRequest.Name>"
    Layout
        two column
            AsyncActionRequest
                label is "Request"
            AsyncActionTrigger
                label is "Trigger"
        two column
            RunOnErrorFailureCode
            AsyncQueueDefinition
                label is "Queue"
        two column
            AsyncActionRequest.Actor
                label is "Actor"
            AsyncActionRequest.AuthenticatedActor
            AsyncActionRequest.IsProxy
        header2 of "Action"
        two column
            AsyncActionRequest.RunOnErrorAction.ActionType
            AsyncActionRequest.DataArea
        two column
            AsyncActionRequest.RunOnErrorAction.ImplementingClass
        two column
            AsyncActionRequest.RunOnErrorAction.AsyncAction
        paragraph
            AsyncActionRequest.RunOnErrorAction.ActionParameters
                label is "Parameters"
                use text area
        header2 of "ErrorMessage"
        paragraph
            RunOnErrorErrorMessage
                use text area of 2 lines
        header2 of "StackTrace"
        paragraph
            RunOnErrorResult
                use text area
