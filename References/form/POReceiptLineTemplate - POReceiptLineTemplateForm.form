POReceiptLineTemplateForm is a Form
    is primary
    title is "PurchaseOrderReceiptLine"
    Layout
        three column distributed
            column1
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
                paragraph
                    visible when (PurchaseOrderReceipt entered)
                        PurchaseOrderReceipt
                            label is "Receipt"
                            display only
                    visible when (PurchaseOrderReceipt not entered)
                        UnreleasedPurchaseOrderReceipt
                            label is "Receipt"
                            display only
                PurchaseOrderLine.Item
                paragraph
                    PurchaseOrderLine.RemainingQuantity
                        label is "RemainingQuantity"
                    PurchaseOrderLine.EnteredBuyUOM
                        no label
                blank line
                paragraph
                    ReceivedQuantity
                    ReceivedUOM
                        no label
                        select is ValidBuyUnitsOfMeasure
            column2
                ContextPurchaseOrder
                    label is "PurchaseOrder"
                PurchaseOrderReceipt.ReferenceNumber
                    label is "Reference"
                PurchaseOrderLine.ItemType
                    label is "ItemType"
                PurchaseOrderLine.Manufacturer.ManufacturerCode
                    label is "Manufacturer"
                blank line
                ShipToLocation
            column3
                PurchaseOrderLine.LineNumber
                    label is "Line"
                PurchaseOrderReceipt.ReceivedDate
                PurchaseOrderLine.Description
                    label is "Description"
                PurchaseOrderLine.Manufacturer.ManufacturerDivision
                    label is "ManufacturerNumber"
                blank line
                TransientCancelBackOrder
                    label is "CancelBackorder"
                TransientInspectionRequired
                    label is "InspectionRequired"
