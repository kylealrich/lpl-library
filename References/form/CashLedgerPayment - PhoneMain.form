PhoneMain is a Form
    title is "MainForm"
    Layout
        display as text
            visible when (not RecordExists)
                two column distributed
                    column1
                        paragraph
                            CashCode
                            CashCode.Description
                                no label
                    column2
                        paragraph
                            CashLedgerPayment.BankTransactionCode
                                select is CashPayments
                            CashLedgerPayment.BankTransactionCode.Description
                                no label
                            CashLedgerTransactionIdentifier
            single column
                paragraph
                    PayablesData.PayablesCompany
                        label is "Company"
                    PayablesData.PayablesCompany.Name
                        no label
                paragraph
                    PayablesData.Vendor
                        label is "Vendor"
                    PayablesData.Vendor.VendorName
                        no label
                paragraph
                    ProcessLevel
                        label is "ProcessLevel"
                    ProcessLevel.Name
                        no label
            paragraph
                CompanyBaseData.OverrideCompany
                    label is "OverrideCompany"
                CompanyBaseData.OverrideCompany.Name
                    no label
                CompanyBaseData.OverrideCompany.Currency
                    no label
            two column table
                column1
                    paragraph
                        BankAmount
                        BankCurrency
                            no label
                column2
                    PostDate
            two column table
                column1
                    PayablesData.PayGroup
                        label is "PayGroup"
                    CurrencyTable
                        label is "CurrencyTable"
                column2
                    PayablesData.PayGroup.PostCompany
                        label is "PayGroupPostingCompany"
                    CurrencyTable.Description
                        label is "CurrencyTableDescription"
            paragraph
                Description
            paragraph
                visible when (HasAttachment)
                    PaymentAttachment.File
            paragraph
                visible when (ReissueOriginalReference entered)
                    ReissueOriginalReference
                visible when (ReissueOriginalIdentifier entered)
                    ReissueOriginalIdentifier
            paragraph
                visible when (ApprovalCostCenter entered)
                    ApprovalCostCenter
                visible when (ApprovalCategory entered)
                    ApprovalCategory
            header3 of "PayeeInformation"
            paragraph
                PayeeName
                    label is "PayeeName"
                MailingName
            paragraph
                visible when (PayeeFirstName entered)
                    PayeeFirstName
                visible when (PayeeMiddleName entered)
                    PayeeMiddleName
            blank line
            visible when (PayeePostalAddress entered)
                header3 of "PayeeAddress"
                PayeePostalAddress
                    form is PostalAddressMinimumWithType
            single column
                visible when (LanguageCode entered)
                    LanguageCode
                        label is "Locale"
                        compact format
            blank line
            header2 of "BankInformation"
            button of "ViewBankInformation"
                link is PhoneBankInformation
                display as link
