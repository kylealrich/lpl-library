SourceIdUpdate is a Form
    title is "SupplierContactAndLocationInformation"
    Actions
        action is save and close
        action is refresh
            label is "_"
    Layout
        two column distributed
            column1
                paragraph
                    Picture.File
                        display as portrait image up to 5 lines
                    visible when (not Supplier.SupplierExtEntityEnabled)
                        LoginName
                            display as text
                ContactTitle
                    label is "Title"
                    show up to 25 characters
                paragraph
                    MainContact.GivenName
                        label is "FirstName"
                        show up to 25 characters
                    MainContact.FamilyName
                        label is "LastName"
                        show up to 25 characters
                paragraph
                    visible when (not Supplier.SupplierExtEntityEnabled)
                        EmailAddress
                        visible when (SupplierGroup.RequireEmailConfirmation)
                            ConfirmEmailAddress
                                label is "*_ConfirmEmailAddress"
                    visible when (Supplier.SupplierExtEntityEnabled)
                        EmailAddress
                            display as text
                        button of "Update" with icon.edit
                            visible when (EmailAddress entered)
                            action is AdminUpdateEmail
                            display as link
                    ReceiveEmailNotification
                paragraph
                    VendorLocation
                        select is ActivePurchaseFromLocations
                    VendorLocation.VendorName
                        no label
                        display as text
                LocationName
                paragraph
                    GlnNumberContact
                        label is "GlobalLocationNumber"
                    GlnNumberContact.Description
                        no label
                        display as text
                paragraph
                    TelephoneNumber
                paragraph
                    MobilePhone
                paragraph
                    FaxNumber
                paragraph
                    PrimaryContact
                    visible when (ContactExists)
                        visible when (Active)
                        Active
                            display as text
                        visible when (not Active)
                            ActiveTag
                                no label
                                display as tag
                                    color of red
            column2
                text of "_"
                header2 of "MailingAddress"
                LocationAddress
                    form is PostalAddressShortRequired
                visible when (SupplierGroup.DisplayTypeForRegistration)
                    LocationAddress.Type
