SubleaseBillingInvoiceForm is a Form
    propagate as a drill
    title is "Invoice"
    Layout
        four column distributed
            column1
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
            column2
                paragraph
                    OriginatingDocument(SubleaseBillingScheduleDetail).Sublease
                        display as text
            column3
                paragraph
                    Customer
                        display as text
                    Customer.Name
                        no label
                        display as text
            column4
                paragraph
                    InvoiceNumber
                        display as text
                    Status
                        display as text
        header2 of "_"
        three column
            column1
                Description
                visible when (HasIDMGeneratedInvoice)
                    paragraph
                        button of "ViewInvoice"
                            link is external "<DerivedIDMInvoiceLink>"
                            label is "SubleaseBillingInvoice"
                visible when (HasGeneratedInvoice)
                    paragraph
                        GeneratedInvoice.File
                            label is "Document"
            column2
                InvoiceDate
                DueDate
                PostDate
            column3
                paragraph
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    Currency
                        no label
                        display as text
                paragraph
                    TaxAmount.CurrencyAmount
                        label is "TaxAmount"
                    Currency
                        no label
                        display as text
