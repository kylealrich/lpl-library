MobileSupplyChainDeliveryEventAttachment is a Form
    is primary
    title is "DeliveryEventImages"
    Layout
        header2 of "DeliveryEvent"
        display as text
            four column distributed
                column1
                    MobileSupplyChainDeliveryTicket.DeliverToCompanyLocation.MobileSupplyChainCompany
                        label is "DeliverToCompany"
                        display as text
                    MobileSupplyChainDeliveryEvent.PerformedAction
                        display as text
                column2
                    MobileSupplyChainDeliveryTicket.DeliverToCompanyLocation.MobileSupplyChainLocation
                        label is "DeliverToLocation"
                        display as text
                    MobileSupplyChainDeliveryEvent.create stamp.actor
                        label is "PerformedBy"
                        display as text
                column3
                    MobileSupplyChainDeliveryTicket.InforTrackingNumber
                        display as text
                    MobileSupplyChainDeliveryEvent.TimeSubmitted
                        label is "EventDateAndTime"
                        display as text
                column4
                    MobileSupplyChainDeliveryTicket.DocumentNumber
                        display as text
                    MobileSupplyChainDeliveryTicket.DerivedVendor
                        display as text
            four column distributed
                column1
                    visible when (MobileSupplyChainDeliveryEvent.EmployeeID entered)
                        MobileSupplyChainDeliveryEvent.EmployeeID
                            display as text
                    visible when (MobileSupplyChainDeliveryEvent.EmployeeID not entered)
                        MobileSupplyChainDeliveryEvent.DerivedBlankDisplay
                            label is "EmployeeID"
                            display as text
                column2
                    MobileSupplyChainDeliveryEvent.DerivedRecipient
                        label is "RecipientName"
                        display as text
                column3
                    visible when (MobileSupplyChainDeliveryEvent.PackageCount entered)
                        MobileSupplyChainDeliveryEvent.PackageCount
                            display as text
                    visible when (MobileSupplyChainDeliveryEvent.PackageCount not entered)
                        MobileSupplyChainDeliveryEvent.DerivedBlankDisplay
                            label is "PackageCount"
                            display as text
        header2 of "<Attachment.Title>"
        single column
            Attachment.File
                no label
                display only
                display as full image up to 15 lines
