Main is a Form
    Layout
        header2 of "LineDetail"
        three column distributed
            column1
                TotalAddOnChargeCost
                    label is "AddOnChargeAmount"
                    display as text
                ProcurementCardStatement.FreightAmount
                    display as text
                ProcurementCardStatement.DutyAmount
                    display as text
                ProcurementCardStatement.DiscountAmount
                    display as text
            column2
                ProcurementCardStatement.VatReferenceNumber
                    label is "V\\A\\TReferenceNumber"
                    display as text
                ProcurementCardStatement.VatTaxRate
                    label is "V\\A\\TTaxRate"
                    display as text
                ProcurementCardStatement.VatTaxAmount
                    label is "V\\A\\TTaxAmount"
                    display as text
                TransactionDate
                    display as text
            column3
                ProcurementCardStatement.OrderDate
                    display as text
                paragraph
                    PostDate
                    ApprovedDate
        header2 of "Charges"
        three column distributed
            column1
                paragraph
                    CommodityCode
                        show up to 10 characters
                    CommodityCode.CcDescription
                        no label
                        display as text
                paragraph
                    DiversityCode
                    DiversityCode.Description
                        no label
                        display as text
                paragraph
                    ProcurementCardReasonCode
                        label is "ReasonCode"
                    ProcurementCardReasonCode.Description1
                        no label
                        display as text
                    ProcurementCardReasonCode.Description2
                        no label
                        display as text
            column2
            paragraph
                UNSPSCCode
                    label is "U\\N\\S\\P\\S\\C"
                    compact format
                UNSPSCCode.ShortDescription
                    no label
                    display as text
            paragraph
                IncomeCode
                IncomeCode.Description
                    no label
                    display as text
            paragraph
                MerchantCategoryCode
                Merchant.TaxID
                    label is "TaxID"
                    display as text
            column3
            paragraph
                Manufacturer
                    label is "ManufacturerInformation"
                    compact format
                Manufacturer.Description
                    no label
                    display as text
            paragraph
                ManufacturerNumber
            paragraph
                TaxIndicator
            visible when (IsNotPurchaseOrderCharges)
            single column
                paragraph
                    DistributionCompanyAndCode
                        compact format
                    DistributionCompanyAndCode.DistributionCode.Description
                        no label
                        display as text
        display as text
            visible when (IsPurchaseOrderCharges)
                header2 of "PurchaseOrder"
                three column distributed
                    column1
                        paragraph
                            PurchaseOrder
                                label is "P\\ONumber"
                            PurchaseOrderLine
                                label is "P\\OLine"
                        DisplayItem
                            label is "Item"
                        paragraph
                            ProcurementCardStatement.ShipToPostalCode
                                label is "ShipTo"
                            ProcurementCardStatement.ShipFromPostalCode
                                label is "ShipFrom"
                    column2
                        DisplayVendor
                            label is "Vendor"
                        DisplayVendorItem
                            label is "VendorItem"
                        Quantity
                    column3
                        paragraph
                            DisplayVendorBuyUOM
                                label is "VendorBuyUOM"
                        paragraph
                            DisplayVendorPriceUOM
                                label is "VendorPriceUOM"
                        paragraph
                            UnitCost
                            ItemTotal
                single column
                    ProcurementCardStatement.DestinationCountryCode
