DunningTextCodeMaintenance is a Form
    is primary
    title is "AdvancedDunningLetterTextCode"
    Layout
        paragraph
            DunningTextCode
                label is "AdvancedDunningLetterTextCode"
                select is DunningLetterTextCodes
        paragraph
            IsoLocale
                label is "Locale"
                compact format
            IsoLocale.LocaleName
                no label
                display as text
        single column
            TransientEditNotes
                label is "EditText"
        paragraph
            visible when (TransientEditNotes)
                text of "MaximumOf12LinesMayBeEntered;MaximumOf55CharactersAllowedOnEachLine"
                    italics
                    color of blue
        single column
            visible when (TransientEditNotes)
                TransientNotes
                    label is "DunningText"
                    use text area of 14 lines
            visible when (not TransientEditNotes)
                TransientNotes
                    label is "DunningText"
                    display as text
        paragraph
            button of "AdvancedDunningProcessCode"
                link is DunningProcessCodeNav
