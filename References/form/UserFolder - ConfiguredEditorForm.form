ConfiguredEditorForm is a Form
    Layout
        two column distributed
            visible when (not IsPage)
                column1
                    ListName
                        no label
                        header2
                        bold
                        display as text
                        raise red alert when (UserListRel.Status.Invalid)
                            mouse over text is "Invalid"
                        raise yellow alert when (UserListRel.Status.Inactive)
                            mouse over text is "Inactive"
                        raise green alert when (UserListRel.Status.Active)
                            mouse over text is "Active"
                    paragraph
                        BusinessClass
                            header3
                            display as text
            visible when (IsPage)
                column1
                    UserPageRel.UserPageName
                        no label
                        header2
                        bold
                        display as text
                        raise red alert when (UserPageRel.Status.Invalid)
                            mouse over text is "Invalid"
                        raise yellow alert when (UserPageRel.Status.Inactive)
                            mouse over text is "Inactive"
                        raise green alert when (UserPageRel.Status.Active)
                            mouse over text is "Active"
            column2
                ConfigEntityRel.DerivedLastChange
                    no label
                    display as text
                paragraph
                    button of "Edit"
                        visible when (HasConfigEntityRecord)
                        action is ConfigEntityRel.Edit
                        is primary
                    visible when (not IsPage)
                        button of "Activate"
                            visible when (not UserListRel.Status.Active)
                            action is ActivateListReport
                        button of "Reset_LPL"
                            action is ResetListReport
                    visible when (IsPage)
                        button of "Activate"
                            visible when (not UserPageRel.Status.Active)
                            action is ActivatePageReport
                        button of "Reset_LPL"
                            action is ResetPageReport
                paragraph
                    visible when (not IsPage)
                        button of "ViewBusinessClassLPL"
                            link is LPLViewer
                            align as label
                            display as link
                        button of "View_BaseUI_LPL"
                            link is LPLListViewer
                            align as label
                            display as link
                    visible when (not IsPage)
                        button of "ViewPageLPL"
                            link is LPLPageViewer
                            align as label
                            display as link
                    button of "CompareAgainstBase"
                        visible when (HasConfigEntityRecord)
                        link is ConfigEntityRel.CompareAgainstCurrentApplicationVersion
                        align as label
                        display as link
        single column
            visible when (HasUserListRecord)
                ReportLPL
                    no label
                    display as text
                    use text area of 30 lines
            visible when (HasUserPageRecord)
                PageReportLPL
                    no label
                    display as text
                    use text area of 30 lines
            visible when (ReportHasErrorText)
                ReportErrorText
                    use text area of 5 lines
            visible when (DisplayMissingUserList)
                MissingUserList
                    no label
                    display as tag
                        color of red
                text of "Run_'Reset_LPL'_toFix"
