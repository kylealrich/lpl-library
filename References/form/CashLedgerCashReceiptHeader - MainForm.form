MainForm is a Form
    Layout
        two column distributed
            visible when (not IsCreated)
                column1
                    paragraph
                        CashCode
                            when value changed
                                refresh AutoNumberingAllowed
                        CashCode.Description
                            no label
                            display as text
                        CashCode.Currency
                            no label
                            display as text
                    CashLedgerCashReceiptHeader.TransactionNumber
                        display as required when (not AutoNumberingAllowed)
                column2
                    paragraph
                        CashLedgerCashReceiptHeader.BankTransactionCode
                            label is "TransactionCode"
                            when value changed
                                refresh AutoNumberingAllowed
                        CashLedgerCashReceiptHeader.BankTransactionCode.Description
                            no label
                            display as text
                    Status
                        display as text
        two column distributed
            column1
                TransactionType
                    label is "ReceiptType"
                DepositDate
                DepositAmount
                    label is "DepositAmount"
                paragraph
                    Company.OrigCompany
                        select is Company
                        display as required
                        when value changed
                            refresh AutoNumberingAllowed
                    Company.OrigCompany.Name
                        no label
                        display as text
                    Company.OrigCompany.Currency
                        display as text
                paragraph
                    CurrencyTable
                    CurrencyTable.Description
                        no label
                        display as text
                GeneralLedgerSourceCode
                    label is "SourceCode"
                visible when (not CanApplyAdditionalCashAllocations)
                    TransientApplyAllocationCode
                        label is "ApplyCashAllocationCode"
                paragraph
                    visible when (TransientApplyAllocationCode)
                        TransientCashAllocationCode
                            label is "CashAllocationCode"
                    visible when (TransientApplyAllocationCode)
                        TransientCashAllocationAmount
                            label is "CashAllocationAmount"
            column2
                NumberOfFinancialInstruments
                PostDate
                Description
                CashProcessLevel
                    label is "ProcessLevel"
                ApprovalCategory
                ApprovalCostCenter
        paragraph
            visible when (HasAttachment)
                ReceiptAttachment.Title
            ReceiptAttachment.File
