FranchiseContractComment is a Form
    is primary
    propagate as a drill
    title is "FranchiseContractComment"
    Layout
        two column
            column1
                FranchiseContract
                    display as text
                Name
                    label is "Title"
            column2
                FranchiseContractComment
                    label is "Sequence"
                    display as text
                paragraph
                    Attachment.Title
                        label is "AttachmentTitle"
                    Attachment.File
                        label is "Attachment"
                    visible when (HasAttachment)
                        button of "View"
                            view Attachment.File
                            display as link
        paragraph
            Comment
