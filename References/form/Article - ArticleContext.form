ArticleContext is a Form
    title is "Article"
    Layout
        three column distributed
            visible when (not ArticleExists)
                paragraph
                    ProcurementGroup
                    ProcurementGroup.Description
                        no label
                        display as text
            visible when (ArticleExists)
                column1
                    display as text
                        paragraph
                            ProcurementGroup.RepresentativeText
            visible when (ArticleExists)
                column2
                    display as text
                        paragraph
                            RepresentativeText
                            DisplayOrder
                column3
                    paragraph
                        Active
                            display as tag
                                color of green when (IsActive)
                                color of red when (not IsActive)
