SupplierPortalPurchaseOrderInformationContext is a Form
    disable field options
    Layout
        display as text
            four column distributed
                column1
                    PurchaseOrder
                    SupplierPortalPurchaseFromLocation
                    visible when (HasReference1)
                        Reference1
                column2
                    POTotalCurrency
                        label is "PurchaseOrderTotal"
                    SupplierPortalShipToLocation
                    visible when (HasReference2)
                        Reference2
                column3
                    SupplierPortalCompanyInformation
                    paragraph
                        BuyerName
                            label is "Buyer"
                        visible when (PurchaseOrderExists)
                            button of icon.mail
                                link is "mailto:<BuyerEmail>"
                            button of icon.phone
                                link is "tel:<BuyerPhone>"
                column4
                    PurchaseOrderDate
                    DerivedPurchaseOrderStatus
                        label is "Status"
                    paragraph
                        visible when (HasPODocument)
                            button of "ViewPurchaseOrderDocument"
                                view first LatestPODocumentRel.Attachment.File
                                is primary
                        visible when (HasIDMDocument)
                            button of "ViewPurchaseOrderDocument"
                                link is external "<DerivedIDMDocumentLink>"
                                    lazy url retrieval
                                is primary
