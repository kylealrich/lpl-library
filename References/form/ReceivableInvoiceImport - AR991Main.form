AR991Main is a Form
    title is "Main"
    Layout
        two column distributed
            column1
                PaymentSeq
                    label is "PaymentSequence"
                Status
                ReceivableProcessLevel
                    label is "ProcessLevel"
                    select is ProcessLevels
                BatchNumber
                    label is "Batch"
                TransactionDate
                DueDate
                GeneralLedgerDate
                    label is "PostDate"
                InvoiceAmount.CurrencyAmount
                    label is "TransactionAmount"
                ReceivableGeneralLedgerCode
                    label is "AccountsReceivableCode"
                    select is ARCodes
                ReasonCode
                    label is "Reason"
                TermsCode
                    label is "PaymentTerms"
                    select is TermsCodes
                CustomerBillTo
                    label is "BillTo"
                DiscDate
                    label is "DiscountDate"
                AppliedAmount
                    label is "AppliedAmount"
                DiscPct
                    label is "DiscountPercent"
                AdjustAmount
                DiscAmt
                    label is "DiscountAmount"
                Description
                    label is "Description"
                OpenOrderAmount
                    label is "OpenOrders"
                Project
                visible when (Company.UseIDM)
                    paragraph
                        IDMPrinter
                            show up to 25 characters
                        IDMPrinter.Description
                            no label
                            display as text
            column2
                CurrencyRateToCustomerGroupCurrency
                    label is "GroupRate"
                OriginalCurrency
                    label is "TransCurrency"
                CurrencyMultiplicationOrDivision
                    label is "CoCurrMult_orDiv"
                CustomerGroupCurrencyMultiplicationOrDivision
                    label is "GroupMult_orDiv"
                XrefCompany
                    label is "X\\RefCompany"
                System
                CustomerPurchaseOrder
                    label is "P\\O"
                XrefNbr
                    label is "X\\RefNumber"
                XrefType
                    label is "X\\RefType"
                LastApplicationSequence
                    label is "AppliedSeq"
                LastStatementDate
                InvoiceTypeCode
                    select is CustomerInvoiceTypeCodeList
                InvoiceTypeCode.Description
                    no label
                    display as text
                SalesRepresentative
                    label is "SalesRep"
                    select is SalesReps
                AutomaticCashApplication
                    label is "AutoApply"
                        left of field
                BankTransactionCode
                    label is "PaymentCode"
                    select is CashPayments
                CurrencyDecimalsNumber
                    label is "CurrencyDecimalInd"
                RevalueCurrencyTransactions
                    label is "RevalueCurrencyTransactions"
                        left of field
                LastFinanceChargeDate
                    label is "LastFinChrgDate"
                SummarizeDetail
                    label is "SummarizeDetailForDisplay"
