Company is a CompositeForm
    is primary
    title is "BillingCompany"
    context form is CompanyContext
        background is theme color
    Address is a Panel
        form is Address
    RemitTo is a Panel
        form is RemitTo
    GlobalLedgerAccounts is a Panel
        form is GLAccounts
    InvoicingOptions is a Panel
        form is InvoicingOptions
    InvoicePrefixes is a Panel
        form is InvoicePrefixes
    CurrencyAndTax is a Panel
        form is CurrencyandTax
    OrderEntryOptions is a Panel
        form is OEOptions
    Comments is a Panel
        form is Comments
    DocumentTemplates is a Panel
        visible when (not UseIDM)
        form is DocumentTemplatesForm
    IDMDocumentTemplates is a Panel
        title is "DocumentTemplates"
        visible when (UseIDM)
        form is IDMDocumentTemplatesForm
