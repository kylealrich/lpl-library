Main is a Form
    Layout
        four column distributed
            column1
                ReceivableInvoiceType
                    label is "Type"
                paragraph
                    CreditDebitMemoReason
                        label is "MemoReason"
                        select is ReceivableReasonCodeMemoList
                        display as required when (IsMemoReasonRequired)
                    CreditDebitMemoReason.Description
                        no label
                        display as text
                InvoiceEntryTemplate
                visible when (ReceivableInvoiceType.MixedSignLines)
                    AlternateReceivableInvoiceType
                        display as required
            column2
                paragraph
                    ReceivableProcessLevel
                        label is "ProcessLevel"
                        select is ProcessLevels
                    ReceivableProcessLevel.Name
                        no label
                        display as text
                OriginalCurrency
                    label is "Currency"
                InvoiceAmount
            column3
                paragraph
                    InvoiceTypeCode
                        select is CustomerInvoiceTypeCodeList
                    InvoiceTypeCode.Description
                        no label
                        display as text
                paragraph
                    TermsCode
                    TermsCode.Description.Desc[1]
                        no label
                        display as text
                    TermsCode.Description.Desc[2]
                        no label
                        display as text
                Status
                    label is "InvoiceStatus"
            column4
                paragraph
                    ReceivableGeneralLedgerCode
                        label is "AccountsReceivableCode"
                    ReceivableGeneralLedgerCode.Description
                        no label
                        display as text
                paragraph
                    GlobalDocumentType
                        label is "DocumentTypeCode"
                        select is DocumentTypeCodes
                    GlobalDocumentType.Description
                        no label
                        display as text
        header2 of "FrequencyControl"
        four column distributed
            column1
                RecurringInvoiceTemplate.Frequency
                    label is "Frequency"
                visible when (RecurringInvoiceTemplate.IsBillMonthRequired)
                    RecurringInvoiceTemplate.BillMonth
                visible when (RecurringInvoiceTemplate.IsBillDayRequired)
                    RecurringInvoiceTemplate.BillDay
                visible when (RecurringInvoiceTemplate.Frequency.Weekly)
                    RecurringInvoiceTemplate.BillDayOfWeek
            column2
                StartDate
                visible when (not IsDisplayOnlyStopDate)
                    StopDate
                visible when (IsDisplayOnlyStopDate)
                    StopDate
                        display only
            column3
                visible when (not IsDisplayOnlyNumberOfInvoices)
                    NumberOfInvoices
                visible when (IsDisplayOnlyNumberOfInvoices)
                    NumberOfInvoices
                        display only
                CurrentBillDate
                    display as text
            column4
                CycleCode
                InvoiceCount
                    display as text
