ContractImportTierMain is a Form
    title is "Tier"
    Layout
        header2 of "TierPrice"
        paragraph
            TierMarkupDiscount
                label is "Type"
            visible when (not TierMarkupDiscount.Fixed)
                TierPricingAmtPct.TierCost
                    label is "Cost"
                TierPricingAmtPct.TierPercent
                    label is "Percent"
        header2 of "TierFreightFactor"
        paragraph
            FreightMarkupDiscount
                label is "Type"
            FreightPricingAmtPct.FreightCost
                label is "Cost"
            FreightPricingAmtPct.FreightPercent
                label is "Percent"
