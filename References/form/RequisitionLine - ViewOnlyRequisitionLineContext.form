ViewOnlyRequisitionLineContext is a Form
    Layout
        display as text
            four column distributed
                column1
                    Requisition.Requester.Employee.PresentationNameSnapshot
                        label is "Requester"
                        header4
                    paragraph
                        button of "<Requisition.Requester.Employee.EmployeeWorkEmailAddress>"
                            link is "mailto:<Requisition.Requester.Employee.EmployeeWorkEmailAddress>"
                            display as link
                        button of "<Requisition.Requester.Employee.EmployeeWorkTelephone>"
                            link is "tel:<Requisition.Requester.Employee.EmployeeWorkTelephone>"
                            display as link
                column2
                    Requisition.Company.DerivedCompanyNameID
                        label is "Company"
                        header4
                column3
                    Requisition.RequestingLocation.RequestingLocationNameID
                        label is "RequestingLocation"
                        header4
                column4
                    Requisition.DerivedRequsitionAmountCurrency
                        label is "RequisitionAmount"
                        header4
