ReconcileActionForm is an ActionForm
    action is Open.Reconcile
    title is "ReconcileOpenTransaction"
    Layout
        paragraph
            PrmReconcileDate
            PrmReconcileBankAmount
            PrmCurrencyAmtOverride
        visible when (PrmCurrencyAmtOverride)
            paragraph
                PrmReconCurrencyAmount.FunctionalAmount
                    label is "Functional"
                Company.OrigCompany.AccountingEntity.FunctionalCurrency
                    no label
                    display only
                IssuedBaseAmount.FunctionalAmount.EnteredCurrencyAmount
                    no label
                    display only
                IssuedBaseAmount.FunctionalAmount.EnteredCurrencyRate
                    no label
                    display only
            visible when (Company.OrigCompany.AccountingEntity.AlternateCurrencyExists)
                paragraph
                    PrmReconCurrencyAmount.AlternateAmount
                        label is "Alternate"
                    Company.OrigCompany.AccountingEntity.AlternateCurrency
                        no label
                        display only
                    IssuedBaseAmount.AlternateAmount.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.AlternateAmount.EnteredCurrencyRate
                        no label
                        display only
            visible when (Company.OrigCompany.AccountingEntity.AlternateCurrency2Exists)
                paragraph
                    PrmReconCurrencyAmount.AlternateAmount2
                        label is "Alternate2"
                    Company.OrigCompany.AccountingEntity.AlternateCurrency2
                        no label
                        display only
                    IssuedBaseAmount.AlternateAmount2.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.AlternateAmount2.EnteredCurrencyRate
                        no label
                        display only
            visible when (Company.OrigCompany.AccountingEntity.AlternateCurrency3Exists)
                paragraph
                    PrmReconCurrencyAmount.AlternateAmount3
                        label is "Alternate3"
                    Company.OrigCompany.AccountingEntity.AlternateCurrency3
                        no label
                        display only
                    IssuedBaseAmount.AlternateAmount3.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.AlternateAmount3.EnteredCurrencyRate
                        no label
                        display only
            visible when (IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyOneEntered)
                paragraph
                    PrmReconCurrencyAmount.ReportAmount1
                        label is "<IssuedBaseAmount.FinanceEnterpriseGroup.ReportOne>"
                    IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyOne
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount1.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount1.EnteredCurrencyRate
                        no label
                        display only
            visible when (IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyTwoEntered)
                paragraph
                    PrmReconCurrencyAmount.ReportAmount2
                        label is "<IssuedBaseAmount.FinanceEnterpriseGroup.ReportTwo>"
                    IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyTwo
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount2.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount2.EnteredCurrencyRate
                        no label
                        display only
            visible when (IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyThreeEntered)
                paragraph
                    PrmReconCurrencyAmount.ReportAmount3
                        label is "<IssuedBaseAmount.FinanceEnterpriseGroup.ReportThree>"
                    IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyThree
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount3.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount3.EnteredCurrencyRate
                        no label
                        display only
            visible when (IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyFourEntered)
                paragraph
                    PrmReconCurrencyAmount.ReportAmount4
                        label is "<IssuedBaseAmount.FinanceEnterpriseGroup.ReportFour>"
                    IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyFour
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount4.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount4.EnteredCurrencyRate
                        no label
                        display only
            visible when (IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyFiveEntered)
                paragraph
                    PrmReconCurrencyAmount.ReportAmount5
                        label is "<IssuedBaseAmount.FinanceEnterpriseGroup.ReportFive>"
                    IssuedBaseAmount.FinanceEnterpriseGroup.ReportCurrencyFive
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount5.EnteredCurrencyAmount
                        no label
                        display only
                    IssuedBaseAmount.ReportAmount5.EnteredCurrencyRate
                        no label
                        display only
        paragraph
            visible when (IsFundTransfer)
                PrmReconcileRelatedFundTransfers
        paragraph
            PrmCommentText
                use text area of 12 lines
