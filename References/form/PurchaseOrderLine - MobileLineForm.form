MobileLineForm is a Form
    title is "_"
    Actions
        action is save and close
        action is save and new
            action icon is hidden
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
    Layout
        single column
            Item
                select is MobileItemsSelectCardList
                display as required when (true)
                when value changed
                    ItemType =  DefaultItemType
            visible when (ItemType.Inventoried)
                display as text
                    Description
            visible when (ItemType.NonStock)
                display as text
                    Description
            visible when (ItemType.Special)
                Description
                    display as required when (DescriptionRequired)
            visible when (ItemType.Service)
                Description
                    label is "ServiceDescription"
                    display as required when (DescriptionRequired)
            VendorItem
                select is MobileVendorItemSelectCardList
            ItemType
                when value changed
                    refresh ServiceCodeRequired
                    refresh EarlyDeliveryDateRequired
                    refresh EnteredBuyUOMRequired
                    refresh DescriptionRequired
            visible when (ItemType.Service)
                ServiceCode
                    display as required when (ServiceCodeRequired)
                    when value changed
                        refresh QuantityRequired
        paragraph
            Quantity
                show up to 4 characters
                display as required when (QuantityRequired)
            EnteredBuyUOM
                label is "UnitOfMeasure"
                select is MobileValidBuyUnitsOfMeasureCardList
                display as required when (EnteredBuyUOMRequired)
        single column
            VendorBuyUnitCost
                label is "UnitCost"
                display as required when (IsCostRequired)
            CostOption
                when value changed
                    refresh IsCostRequired
            EarlyDeliveryDate
                label is "DeliveryDate"
                display as required when (EarlyDeliveryDateRequired)
            ShipToLocation
                label is "ShipTo"
                select is MobileInventoryLocationsCardList
