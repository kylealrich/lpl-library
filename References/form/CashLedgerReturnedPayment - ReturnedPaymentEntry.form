ReturnedPaymentEntry is a Form
    Layout
        visible when (RecordExists)
            three column distributed
                column1
                    display as text
                        paragraph
                            CashCode.CashCodeAndDescription
                                label is "CashCode"
                            CashCode.Currency
                                no label
                        Status
                        paragraph
                            BankAccountReturnAmountUnsigned
                                label is "ReturnAmount"
                            visible when (IsUnreleased)
                                AppliedDistributionBankAmount
                                    label is "AppliedAmount"
                                BalanceAmount
                                    label is "Balance"
                        paragraph
                            visible when (BudgetEditInProgress)
                                text of "BudgetEditsInProgress"
                                    bold
                                    color of red
                            visible when (BudgetEditFailure)
                                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                                    bold
                                    color of red
                column2
                    display as text
                        paragraph
                            CashLedgerReturnedPayment.BankTransactionCode.BankTransactionCodeName
                                label is "TransactionCode"
                column3
                    display as text
                        paragraph
                            TransactionNumber
                            visible when (CashLedgerTransactionIdentifierExists)
                                DerivedTransactionIdentifier
                                    label is "TransactionIdentifier"
