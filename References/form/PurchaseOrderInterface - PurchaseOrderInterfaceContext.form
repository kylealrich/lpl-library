PurchaseOrderInterfaceContext is a Form
    Layout
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        Company.DerivedCompanyIDName
                            label is "Company"
                        paragraph
                            Item
                            ItemSummary
                                label is "Description"
                    column2
                        PurchaseOrderInterface.SourceDocumentOrigin
                            label is "System"
                        paragraph
                            Quantity
                            EnteredUOM.UnitOfMeasureAndDescription
                                label is "Unit_ofMeasure"
                            EnteredUnitCost
                                label is "UnitCost"
                    column3
                        paragraph
                            PurchaseOrderInterface.SourceDocumentNumeric
                                label is "Document"
                            PurchaseOrderInterface.LineNumber
                                label is "Line"
                        visible when (Buyer entered)
                            Buyer.RepresentativeText
                                label is "Buyer"
                        visible when (Buyer not entered)
                            text of "_"
