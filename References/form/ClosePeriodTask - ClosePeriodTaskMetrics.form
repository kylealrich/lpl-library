ClosePeriodTaskMetrics is a Form
    Layout
        visible when (TaskStatus.Voided)
            header3 of "<TaskName>VoidedFor<ClosePeriod.CloseCalendarPeriod>_<ClosePeriod.CloseCalendar>"
            blank line
            blank line
        header3 of "<StartMetric>"
        two column distributed
            column1
                paragraph
                    ScheduleForTask.BeginDate
                        label is "Scheduled"
                        display as text
                    ScheduleForTask.BeginTime
                        no label
                        display as text
            column2
                paragraph
                    ActualForTask.BeginDate
                        label is "Actual"
                        display as text
                    ActualForTask.BeginTime
                        no label
                        display as text
        visible when (ShowStartLateReason)
            blank line
            visible when (StartLateCodeDerived entered)
                two column distributed
                    StartLateDisplay
                        label is "Reason"
                        display as text
                    StartLateCommentDerived
                        display as text
        blank line
        blank line
        header3 of "<DueMetric>"
        two column distributed
            column1
                paragraph
                    ScheduleForTask.DueDate
                        label is "Scheduled"
                        display as text
                    ScheduleForTask.DueTime
                        no label
                        display as text
                    visible when (DueTimeSensitive)
                        text of "<TimeSensitiveFormMessage>"
                            bold
                            color of red
            column2
                paragraph
                    ActualForTask.DueDate
                        label is "Actual"
                        display as text
                    ActualForTask.DueTime
                        no label
                        display as text
        visible when (NotClosedByOwner)
            blank line
            paragraph
                TaskCompletedBy.FirstAndLastName
                    label is "ForceCompletedBy"
                    display as text
        visible when (ShowCloseLateReason)
            blank line
            visible when (CloseLateCodeDerived entered)
                two column distributed
                    CloseLateDisplay
                        label is "Reason"
                        display as text
                    CloseLateCommentDerived
                        label is "Comments"
                        display as text
        blank line
        blank line
        header3 of "EffortWas<EffortMetric>"
        two column distributed
            ScheduleForTask.LevelOfEffort
                label is "Scheduled"
                display as text
            ActualForTask.LevelOfEffort
                label is "Actual"
                display as text
        blank line
        blank line
        visible when (HasReopenHistory)
            header3 of "TaskReopened<ReopenCountMessage>"
            visible when (ReopenedOnce)
                three column distributed
                    ReopenedByDerived
                        label is "By"
                        display as text
                    ReopenedDateDerived
                        label is "On"
                        display as text
                    OriginalCloseDate
                        display as text
                visible when (DisplayReopenReasonComment)
                    three column distributed
                        ReopenedMessageDisplay
                            label is "Reason"
                            display as text
                        ReopenedCommentDerived
                            label is "Comments"
                            display as text
