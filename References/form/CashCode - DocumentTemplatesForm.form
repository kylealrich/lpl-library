DocumentTemplatesForm is a Form
    Layout
        paragraph
            UseIDM
                label is "UseIDMTemplate"
        visible when (UseIDM)
            two column
                column1
                    header3 of "IDMDocumentTemplates"
                    paragraph
                        EscheatmentNoticeIDMTemplate
                            select is EscheatmentNoticeIDMTemplate
                            display as required
                        button of "<EscheatmentNoticeIDMTemplate.Name>"
                            link is external "<EscheatmentNoticeIDMTemplate.RetrieveUrl>"
                            display as link
                column2
                    header3 of "IDMEmailOptions"
                    paragraph
                        IDMEmailEscheatmentNotice
                    paragraph
                        EscheatmentNoticeIDMEmailAddress
                    paragraph
                        EscheatmentNoticeIDMEmailTemplate
                            select is EscheatmentNoticeEmailTemplate
                        button of "<EscheatmentNoticeIDMEmailTemplate.Name>"
                            link is external "<EscheatmentNoticeIDMEmailTemplate.RetrieveUrl>"
                            display as link
                    paragraph
                        EscheatmentNoticeIDMEmailSubject
                        visible when (EscheatmentNoticeIDMEmailSubject entered)
                            text of "Sample:<DerivedEscheatmentNoticeIDMEmailSubject>"
