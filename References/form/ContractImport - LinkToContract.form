LinkToContract is an ActionForm
    action is LinkToContract
    Layout
        paragraph
            ContractGroup
                display as text
            ContractGroup.ProcurementGroup.Description
                no label
                display as text
        paragraph
            LinkToContractNumber
                select is GPOManufacturerAndDistributorContracts
            LinkToContractNumber.Name
                no label
                display as text
        single column
            DoNotSetLinesToUpdate
            RunContractLineUpdatesImmediately
        visible when (RunContractLineUpdatesImmediately)
            single column
                TolerancePercent
                Connector
                ToleranceAmount
                RejectAllCostIncreases
                    label is "RejectAllItemsWithCostDifferences"
                UpdateCostsOnly
