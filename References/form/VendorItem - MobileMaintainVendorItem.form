MobileMaintainVendorItem is a Form
    title is "VendorItemDetails"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        two column table
            display as text
                column1
                    ProcurementGroup
                    Item
                    Item.StockUOM
                        label is "StockUOM"
                    Vendor
                column2
                    ProcurementGroup.Description
                    Item.Description
                    blank line
                    Vendor.VendorName
        paragraph
            VendorItem
                display as text
            VendorItemDescription
        single column
            VendorBuyUOM.UnitOfMeasure
                label is "BuyU\\O\\M"
                select is ValidBuyUnitsOfMeasure
            VendorPriceUOM.UnitOfMeasure
                label is "PriceU\\O\\M"
                select is ValidBuyUnitsOfMeasure
            visible when (not VendorItemExists)
                Manufacturer
                    compact format
            visible when (VendorItemExists)
                Manufacturer
                    display as text
                    compact format
            visible when (not VendorItemExists)
                ManufacturerNumber
            visible when (VendorItemExists)
                ManufacturerNumber
                    display as text
            LabelerIdentificationCode
                label is "L\\I\\C"
            LastLeadtime
                display as text
            MinimumOrderQuantity
                label is "MinimumQuantityPerP\\OLine"
            WarrantyPeriod
                label is "WarrantyDays"
        two column table
            column1
                Active
                    display as text
            column2
                UseAsDefault
                    display as text
