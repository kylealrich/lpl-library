SupplierQResponse is a Form
    title is "QuestionResponses"
    Actions
        action is save
            label is "_"
    Layout
        single column
            SupplierGroupQuestion.QuestionText
                label is number
                display as text
            visible when (SupplierGroupQuestion.HasAttachment)
                SupplierGroupQuestion.Attachment.File
                    label is "ViewSupportingDocument"
            text of "<ConditionalAnswerLabel>"
                italics
                color of red
            SupplierQuestionAnswer
                label is "Answer"
            visible when (SupplierGroupQuestion.AllowResponseAttachment)
                visible when (not HasResponseAttachment)
                    Attachment.File
                        label is "AttachDocument"
                visible when (HasResponseAttachment)
                    Attachment.File
                        label is "ViewAndMaintainDocument"
