UserList is a Form
    is primary
    Layout
        paragraph
            BusinessView
                label is "<BusinessViewLabel>"
            BusinessList
                label is "List"
            TBusinessList
                label is "OriginatedFrom"
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserList
                label is "UserListId"
            Description
        paragraph
            Actor
            visible when (NameOnlyFolder)
                FolderName
        two column
            UserFolder
                label is "UserFolder"
            visible when (not NameOnlyFolder)
                UserFolder.Name
                    no label
                    align as label
                    display as text
        single column
            Delta
                use text area of 40 lines
            visible when (Independent)
                LPLIndex
                    display only
                    use text area of 12 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 10 lines
