ReceivablePaymentHeaderContextForm is a Form
    title is "ReceivablePayment"
    Layout
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        Status
                            display as tag
                                color of gray when (Status.OpenBatchUnreleased)
                                color of green
                    column2
                        ReceivableProcessLevel.RepresentativeText
                            label is "ProcessLevel"
                    column3
                        paragraph
                            DetailTotal
                            Currency.Currency
                three column distributed
                    DepositDate
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                    DetailCount
                visible when (BackgroundProcessing.TaxProcessing)
                    three column distributed
                        column1
                            BackgroundProcessing
                                label is "BackgroundProcessing...RefreshToViewProgress"
                                display as tag
                                    color of red
                visible when (BackgroundProcessing.ReleaseInProcess)
                    three column distributed
                        column1
                            BackgroundProcessing
                                label is "BackgroundProcessing...RefreshToViewProgress"
                                display as tag
                                    color of red
                visible when (BackgroundProcessing.ReleaseFailure)
                    three column distributed
                        column1
                            BackgroundProcessing
                                label is "BackgroundProcessingFinishedWithErrors"
                                display as tag
                                    color of red
                        column2
                            ErrorMessage
