ChargebackCreation is an ActionForm
    action is ChargebackCreation
    Layout
        paragraph
            Company
                select is Companies
                when value changed
                    IsoLocale =  Company.LanguageCode
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
                when value changed
                    IsoLocale =  CompanyGroup.first GeneralLedgerCompanyGroupMembersRel.Company.ReceivableCompany.LanguageCode
            CompanyGroup.Description
                no label
                display as text
        single column
            PrintAdj
                label is "PrintAdjustmentDescription"
        single column
            IsoLocale
                label is "Locale"
                compact format
        single column
            TextCodeGrp
                label is "ChargebackTextCode"
                compact format
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ChargebackCreationReport_RDG
                ChargebackCreationPrintReport_RDG
            column2 of 25%
                ChargebackCreationReport_XPT
                ChargebackCreationPrintReport_XPT
