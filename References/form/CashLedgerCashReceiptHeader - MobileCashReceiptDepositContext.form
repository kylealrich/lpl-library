MobileCashReceiptDepositContext is a Form
    title is "CashReceiptDepositContext"
    Layout
        two column
            column1 of 50%
                CashLedgerCashReceiptHeader.TransactionNumber
                    label is "DepositNumber"
                    display as text
            column2 of 50%
                CashLedgerCashReceiptHeader.BankTransactionCode
                    label is "TransactionCode"
                    display as text
                    select is BankCreditTransactionCodes
        two column
            column1 of 50%
                DepositAmount
                    label is "DepositAmount"
                    display as text
            column2 of 50%
                DepositDate
                    display as text
        two column
            column1 of 50%
                CashCode.CashCodeAndDescription
                    label is "CashCode"
                    display as text
            column2 of 50%
                visible when (not FlagDepositAmountAppliedAmount)
                    AppliedBankAmount
                        label is "AppliedAmount"
                        display as text
        paragraph distributed
            visible when (ReturnedPaymentExists)
                first CashLedgerReturnedPaymentRel.ReturnDate
                    label is "ReturnDate"
                    display as text
        paragraph distributed
            visible when (Status.Released)
                DerivedTransactionIdentifier
                    label is "TransactionIdentifier"
                    display as text
        visible when (IsBatchApproved)
            paragraph
                CashLedgerBatchApproval
                    display as text
        two column distributed
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditFailure)
                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                    bold
                    color of red
