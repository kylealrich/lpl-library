RequestVoidOrStopPaymentCashLedgerTransaction is an ActionForm
    action is RequestVoidOrStopPaymentCashLedgerTransaction
    Layout
        single column
            PrmRequestDate
                label is "RequestDate"
            PrmRequestType
                label is "RequestType"
            visible when (VoidStopPaymentApprovalCodeRequired)
                PrmApprovalCode
                    select is CashLedgerApprovalCodes
            PrmCommentText
                label is "Comment"
                use text area of 12 lines
