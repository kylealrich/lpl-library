ComponentForKitItemContext is a Form
    title is "ComponentForKitItem"
    Layout
        display as text
            four column distributed
                paragraph
                    KitItem.ItemGroup.ItemGroupDescription
                        label is "ItemGroup"
                        display as text
                paragraph
                    KitItem.Company.DerivedCompanyDisplay
                        label is "Company"
                        display as text
                paragraph
                    KitItem.InventoryLocation.DerivedInventoryLocationIDName
                        label is "Location"
                        display as text
                paragraph
                    display as text
                        KitItem.Item.ItemAndDescriptionDisplay
                            label is "KitItem"
                        KitItem.Item.Description2
                            no label
            three column
                KitItem.MakeCode
                    label is "MakeCode"
                KitItem.Active
                visible when (KitItem.IsMakeToOrder)
                    KitItem.Item.StockUOM
                        label is "UOM"
            visible when (KitItem.IsMakeToOrder)
                three column
                    KitItem.Notes
                    KitItem.ProcedureCode
                        label is "Procedure"
                    KitItem.OrderSize
                        label is "StandardOrderSize"
