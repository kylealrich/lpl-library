ManualBankStatement is a CompositeForm
    use for action Unreconciled.ManuallyCreateStatement
    use for action Unreconciled.ManuallyCreateIntradayStatement
    title is "BankStatement"
    context form is ManualBankStatementContextForm
        background is theme color
    Actions
        navigation is StatementReconciliation
            label is "ReconcileByStatement"
            hide when invalid
        navigation is StatementReconciliationByAccount
            label is "ReconcileByAccount"
            hide when invalid
        navigation is StatementReconciliationLink
            label is "ReconciliationAnalysis"
            hide when invalid
        navigation is StatementAnalysis
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Unreconciled.ManuallyCreateStatement
            action icon is create
            label is "_"
            mouse over text is "Manually_\\Create_\\Statement"
        action is open
            label is "_"
        action is save
            label is "_"
        action is Unreconciled.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Lines is a Panel
        list is BankStatementLine set.BankStatementLineList
    LineExceptions is a Panel
        title is "LineExceptions(<NumberOfExceptionLines>)"
        visible when (HasBankStatementLineExceptions)
        list is BankStatementLineExceptionRel.BankStatementLineExceptions
    LineDistributions is a Panel
        visible when (HasStatementLineDistributions)
        list is BankStatementLineDistribution set.StatementLineDistributionByLineList
    LineCashLedgerTransactions is a Panel
        visible when (HasCashLedgerTransactionCreatedFromLine)
        list is CashLedgerTransaction set.StatementLevelCreatedFromBankStatementLine
    NonCashLedgerTransactions is a Panel
        visible when (CashManagementAccount.ReconcileToOtherSystem.Primary)
        list is UnreconciledNonCashLedgerTransactionsRel.NonCashLedgerTransactionList
    ReceivablePaymentBatch is a Panel
        visible when (HasReceivablePaymentHeaderCreatedFromLine)
        list is ReceivablePaymentHeader set.ReceivablePaymentHeaderList
    ReconciliationVarianceDistributions is a Panel
        visible when (HasNonCashLedgerDistributions)
        list is NonCashLedgerDistribution set.StatementNonCashLedgerDistributionsList
    CashLedgerTransactions is a Panel
        visible when (CashManagementAccount.ReconcileToCashLedger.Primary)
        list is UnreconciledCashLedgerTransactionsRel.AllTransactionsWithTotal
    CashLedgerReconciledVariances is a Panel
        visible when (HasCashLedgerReconciledVariances)
        list is CashLedgerReconciledVariancesRel.CashLedgerReconciliationAdjustmentList
    StatementBalances is a Panel
        form is StatementBalances
