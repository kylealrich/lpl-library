CashTransactionProcessingRule is a Form
    is primary
    title is "ProcessingRule"
    Layout
        two column distributed
            column1
                CashTransactionProcessingRule
            column2
                Description
        two column distributed
            AssignmentRule
            Active
        single column
            AssignmentRule.Condition
                no label
                display as text
        header2 of "ProcessingOptions"
        paragraph
            CashTransactionCategory
                select is CashTransactionCategorySelect
            CashTransactionCategory.Description
                no label
                display as text
        visible when (CodingOption.Identifier)
            single column
                text of "<OverrideText>"
                    italics
        blank line
        single column
            CodingOption
        blank line
        visible when (CodingOption.Identifier)
            paragraph
                CashTransactionIdentifierType
                CashTransactionIdentifierType.Description
                    no label
                    display as text
        visible when (CodingOption.ProcessingRule)
            header2 of "AccountingInformation"
            paragraph
                CashAllocationCode
                    select is ActiveCashAllocationCodes
                CashAllocationCode.Description
                    no label
                    display as text
            single column
                text of "Or"
            paragraph
                ProcessingRuleAccount
                    compact format
        visible when (CodingOption.Category)
            header2 of "AccountingInformation"
            display as text
                visible when (CashTransactionCategory.CashAllocationCodeEntered)
                    paragraph
                        CashTransactionCategory.CashAllocationCode
                            display as text
                        CashTransactionCategory.CashAllocationCode.Description
                            no label
                            display as text
                visible when (CashTransactionCategory.CategoryAccountEntered)
                    paragraph
                        CashTransactionCategory.CategoryAccount
                            display as text
