SummaryAgingReport is an ActionForm
    action is SummaryAgingReport
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
            CompanyGroup.Description
                no label
                display as text
        paragraph
            CreditAnalyst
                label is "CreditAnalyst"
                select is CreditAnalyst
            CreditAnalyst.Name
                no label
                display as text
        two column distributed
            column1
                paragraph
                    MajClass
                        label is "MajorClass"
                        select is MajorClass
                    MajClass.Description
                        no label
                        display as text
            column2
                paragraph
                    MinClass
                        label is "MinorClass"
                        select is MinorClass
                    MinClass.Description
                        no label
                        display as text
        header2 of "TransactionOptions"
        paragraph
            ProcessLevel
                select is ProcessLevels
            ProcessLevel.Name
                no label
                display as text
        two column distributed
            column1
                paragraph
                    FrSalesman
                        label is "FromSalesRepresentative"
                        select is SalesReps
                    FrSalesman.Name
                        no label
                        display as text
            column2
                paragraph
                    ToSalesman
                        label is "ToSalesRepresentative"
                        select is SalesReps
                    ToSalesman.Name
                        no label
                        display as text
        header3 of "AgingOptions"
        two column distributed
            TransDate
                label is "As_ofDate"
            FutureApps
                label is "QualifyFutureApplications"
        single column
            PeriodOf
                label is "Audit_orPeriod"
        three column
            AgePeriods1
                label is "AgingPeriods"
            AgePeriods2
                no label
            AgePeriods3
                no label
        two column distributed
            AcoAgeType
                label is "AgingDateMethod"
            AcoAgeCredits
                label is "AgeCredits"
        two column distributed
            AcoAgePymnt
                label is "AgePayment"
            AcoAgeDisputes
                label is "AgeDisputes"
        blank line
        two column distributed
            ReportOption
                label is "ReportSequence"
            SortOption
                label is "CustomerSequence"
        single column
            XGainLoss
                label is "Gain\\,Loss"
        two column distributed
            InThousands
                label is "Report_inThousands"
            PrintAll
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                SummaryAgingReportReport_RDG
            column2 of 25%
                SummaryAgingReportReport_XPT
