Main is a Form
    Layout
        two column distributed
            column1
                ProcessType
            column2
                paragraph
                    InvoiceType
                    visible when (InvoiceType.MatchPrepayment)
                        MatchPrepaymentMethod
                            label is "PrepaymentMethod"
        two column distributed
            RemitToCode
                label is "RemitTo"
            Location
                label is "ShipTo"
        two column distributed
            PayVendor
            InterfacedPayVendor
        visible when (ProcessType.MatchInvoice)
            paragraph
                PurchaseOrder
                paragraph
                    InterfacedPurchaseOrder
                    InterfacedPOCode
                MatchReferenceNumber
        visible when (ProcessType.AOCMatchInvoice)
            paragraph
                PurchaseOrder
                paragraph
                    InterfacedPurchaseOrder
                    InterfacedPOCode
                MatchReferenceNumber
        single column
            visible when (ProcessType.ServiceContract)
                ServiceContract
            visible when (ProcessType.Basic)
                ExternalPurchaseOrder
                    label is "PurchaseOrderReference"
            visible when (ProcessType.Freight)
                ExternalPurchaseOrder
                    label is "PurchaseOrderReference"
        header2 of "Dates_andAmounts"
        three column distributed
            column1
                visible when (not InvoiceType.MatchPrepayment)
                    InvoiceDate
                visible when (InvoiceType.MatchPrepayment)
                    InvoiceDate
                        label is "PrepaymentDate"
                paragraph
                    visible when (not InvoiceType.MatchPrepayment)
                        InvoiceTransactionAmount
                            label is "InvoiceAmount"
                    visible when (InvoiceType.MatchPrepayment)
                        InvoiceTransactionAmount
                            label is "PrepaymentAmount"
                    InvoiceCurrency
                        label is "Currency"
                AllowableAmountForDiscount
                    label is "Allowable"
            column2
                DueDate
                TaxableAmount
            column3
                DistributionDate
                    label is "PostDate"
                TotalTaxAmount
                    label is "TaxAmount"
        header2 of "AdditionalInformation"
        two column distributed
            column1
                Reference
                AuthorityCode
                paragraph
                    TaxCode
                        select is TaxCodesFromTaxMaster
                    FlexibleTermsFlag
                        label is "FlexibleTerms"
            column2
                ProcessLevel
                    select is ProcessLevels
                PurchaseFromLocation
                    label is "PurchaseFrom"
                    select is POPurchaseFromLocations
                TaxAdjustment
        header2 of "Codes"
        two column distributed
            TermsCode
                label is "PaymentTerms"
            ReasonCode
                select is MAReasonCodes
            HoldCode
        two column distributed
            DiversityCode
                select is AllDiversityCodes
            ForeignEconomicRegulatoryCode
                label is "ForeignEcon"
                select is ForeignEconCodes
        header2 of "Miscellaneous"
        two column distributed
            column1
                CertificationNumber
            column2
                CertificationDate
        header2 of "Discounts"
        two column distributed
            column1
                DiscountDate
            column2
                DiscountPercent
        three column table
            column headers
                "Date"
                "Rate"
                "Amount"
            row headers
                "1"
                "2"
                "3"
            column1
                DiscountDate1
                    no label
                DiscountDate2
                    no label
                DiscountDate3
                    no label
            column2
                DiscountPercent1
                    no label
                DiscountPercent2
                    no label
                DiscountPercent3
                    no label
            column3
                DiscountAmount1
                    no label
                DiscountAmount2
                    no label
                DiscountAmount3
                    no label
        header2 of "ProcessingAndApproval"
        two column distributed
            column1
                RoutingCategory
