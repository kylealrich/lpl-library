MobilePOReceiver is a Form
    title is "Receiver"
    Layout
        display as text
            single column
                PurchaseOrderReceipt.DerivedVendorName
                PurchaseOrderReceipt.DerivedPurchaseFromLocationRepresentativeText
                    label is "PurchaseFrom"
                PurchaseOrderReceipt.Buyer.Employee.FirstLastName
                    label is "Buyer"
                paragraph
                    visible when (PurchaseOrderReceipt.Buyer.Employee.EmployeeWorkPhoneExists)
                        PurchaseOrderReceipt.Buyer.Employee.EmployeeWorkTelephone
                            label is "WorkPhone"
                        button of icon.phone
                            link is "tel:<PurchaseOrderReceipt.Buyer.Employee.EmployeeWorkTelephone>"
                paragraph
                    visible when (PurchaseOrderReceipt.Buyer.Employee.EmployeeWorkEmailAddressExists)
                        PurchaseOrderReceipt.Buyer.Employee.EmployeeWorkEmailAddress
                            label is "EmailAddress"
                        button of icon.mail
                            link is "mailto:<PurchaseOrderReceipt.Buyer.Employee.EmployeeWorkEmailAddress>"
                paragraph
                    PurchaseOrderReceipt.PurchaseOrder
                        label is "P\\ONumber"
                    PurchaseOrderReceipt.PurchaseOrder.Company
                        label is "Company"
                PurchaseOrderReceipt.ReceivedDate
                    label is "Date_andTimeReceived"
                PurchaseOrderReceipt.BillOfLading
                    label is "Bill_ofLading"
                visible when (PurchaseOrderReceipt.HasCarrier)
                    PurchaseOrderReceipt.Carrier.DerivedVendorNameID
                        label is "Carrier"
                PurchaseOrderReceipt.PurchaseOrder.DerivedFreightTermName
                    label is "FreightTerm"
                visible when (HasGlobalDocumentType)
                    GlobalDocumentType.GlobalDocumentTypeAndDescription
                        label is "DocumentTypeCode"
