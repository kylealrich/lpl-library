BidTabulationReport is a SummaryForm
    title is "BidTabulationForEvent<SourcingEvent>"
    First Page Header
        Layout
            visible when (UseCompanyLogo)
                single column
                    Company.ReportLogo.File
                        no label
                        display as image
            visible when (UseGroupLogo)
                single column
                    Company.SourcingGroup.ReportLogo.File
                        no label
                        display as image
            header2 of "_"
    Page Header
        Layout
            header2 of "_"
                show border color of black
                shade
            single column
                text of "Tabulation_Of_Bids_For_Event#<SourcingEvent>:_<SourcingEvent.Name>"
            header2 of "_"
            blank line
    Page Footer
        Layout
            two column
                text of "<current corporate date>"
                    left align
                text of "Page<page number>"
                    right align
    Layout
        form is BidTabulationPrint
        blank line
        header2 of "_"
            show border color of black
        three column
            text of "Supplier"
                left align
            text of "Bid_Amount"
                center
            visible when (UsingEstimatedTotal)
                text of "%Over_/_Under"
                    right align
        header2 of "_"
        form is BTSuppliers
        blank line
        header2 of "Items"
            show border color of black
            shade
            center
        header2 of "_"
        form is BTLines
