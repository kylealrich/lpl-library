LookupTaxCodeForm is a Form
    Layout
        three column
            column1
                header4 of "LookupVertexTaxAreaIDForAGivenAddress"
                TaxCalcAndLookup
                    label is "LookupTaxAreaID"
                EffectiveDate
                paragraph
                    LastVertexLookupTaxAreaId
                        label is "LookupTaxAreaID"
                    visible when (ClientSideError)
                        paragraph
                            ReturnedFaultString
                                no label
                                display as text
                single column
                    ClearLookupAddress
                        label is "ClearLookupAddress"
                            left of field
                    LastVertexLookupPostalAddress
            column2
                header4 of "TaxAreaIDResults"
                paragraph
                    ReturnedTaxAreaId
                        label is "ReturnedTaxAreaID"
                OutputTaxRate
                    label is "ReturnedTotalTaxRate"
                visible when (ErrorExist)
                    paragraph
                        OutputErrorNumber
                            label is "ReturnedError"
                        OutputErrorMessage
                            no label
            column3
                header4 of "Rates"
                paragraph
                    CityRateTotal
                        label is "City"
                paragraph
                    StateRateTotal
                        label is "State"
                paragraph
                    CountyRateTotal
                        label is "County"
                paragraph
                    DistrictRateTotal
                        label is "District"
                paragraph
                    CountryRateTotal
                        label is "Country/\\Jurisdiction"
        header2 of "Results"
        visible when (WebServiceError)
            paragraph
                WebServiceErrorMessage
                    label is "WebserviceError"
                        bold
                    display only
                    use text area of 6 lines
        visible when (ErrorExist)
            paragraph
                OutputErrorMessage
                    label is "CalculateTaxError"
                        bold
                    display only
                    use text area of 6 lines
        visible when (NoErrors)
            display as text
                two column
                    column1
                        header4 of "<CapturedXmlText>"
                        paragraph
                            first TaxAreaIdLookupResultsLogRel.HTTPInfo
                                no label
                                use text area of 40 lines
                                show up to 120 characters
                    column2
                        header4 of "<DebugCommentsText>"
                        paragraph
                            visible when (TaxConfigurationRel.CommentText entered)
                                single column
                                paragraph
                                    TaxConfigurationRel.CommentText
                                        no label
                                        use text area of 40 lines
                                        show up to 120 characters
