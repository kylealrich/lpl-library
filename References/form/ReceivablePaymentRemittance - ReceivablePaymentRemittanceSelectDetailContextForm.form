ReceivablePaymentRemittanceSelectDetailContextForm is a Form
    title is "<DerivedReceivablePaymentRemittance>"
    Layout
        visible when (not InvoiceCompanyReceivableInvoiceRelExists)
            text of "RemitTransactionDoesNotExist"
                header2
        visible when (InvoiceCompanyReceivableInvoiceRelExists)
            five column
                column1 of 17%
                    Company.RepresentativeText
                        label is "PaymentCompany"
                        display as text
                    InvoiceCompany
                        label is "InvoicingCompany"
                        display as text
                column2 of 17%
                    ReceivablePaymentHeader
                        label is "PaymentBatch"
                        display as text
                    ReceivableInvoiceType
                        label is "InvoiceType"
                        display as text
                column3 of 17%
                    ReceivablePayment
                        label is "PaymentSequence"
                        display as text
                    ReceivableInvoice
                        label is "Invoice"
                        display as text
                column4 of 17%
                    paragraph
                        ReceivablePayment.TransactionAmount
                            label is "PaymentAmount"
                            display as text
                        ReceivablePayment.OriginalCurrency
                            no label
                            display as text
                    paragraph
                        InvoiceCompanyReceivableInvoiceRel.InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                            display as text
                        InvoiceCompanyReceivableInvoiceRel.OriginalCurrency
                            no label
                            display as text
                column5 of 32%
                    paragraph
                        AppldAmt
                            when value changed
                                TransientDistributionSetState =  DerivedDistributionSetState
                        InvoiceCompanyReceivableInvoiceRel.OriginalCurrency
                            no label
                            display as text
                    paragraph
                        TransientDistributionSetState
                            label is "Status"
                            display as tag
                                color of turquoise when (TransientDistributionSetState.NotSpecified)
                                color of red when (TransientDistributionSetState.OutOfBalance)
                                color of green when (TransientDistributionSetState.ReadyForProcessing)
                                color of green when (TransientDistributionSetState.Processed)
                        DerivedDistributionSetSumOfLines
                            label is "SelectedSum"
                            display as text
                        DerivedDistributionSetLinesDifference
                            label is "Difference"
                            display as text
                    visible when (false)
                        TransientReceivableCompanyForContext
                        TransientReceivableBatchForContext
                        TransientReceivableInvoiceForContext
                        TransientReceivableApplicationSequenceForContext
                        TransientFundDistributionSetState
