SupplierPortalPOOverview is a Form
    disable field options
    Layout
        display as text
            paragraph
                text of "Purchase_Order<PurchaseOrder>"
                    header2
                button of "OpenPurchaseOrder"
                    link is SupplierPortalOverviewNav
                    right align
                    is primary
            visible when (HasPODocument)
                paragraph
                    button of "ViewPurchaseOrderDocument"
                        view first LatestPODocumentRel.Attachment.File
                        right align
                        is primary
            visible when (HasIDMDocument)
                paragraph
                    button of "ViewPurchaseOrderDocument"
                        link is external "<DerivedIDMDocumentLink>"
                            lazy url retrieval
                        right align
                        is primary
            header2 of "_"
            three column distributed
                column1
                    POTotalCurrency
                        label is "PurchaseOrderTotal"
                        header3
                    PurchaseOrderDate
                    PurchaseFromLocation.RepresentativeText
                        label is "PurchaseFromLocation"
                    visible when (HasReference1)
                        Reference1
                column2
                    DerivedCompany
                        label is "Company"
                    DefaultDeliveryDate
                        label is "DeliveryDate"
                    ShipToLocation.RepresentativeTextForPO
                        label is "ShipToLocation"
                    visible when (HasReference2)
                        Reference2
                column3
                    DerivedPurchaseOrderStatus
                        no label
                        display as tag
                            color of yellow when (PurchaseOrderLifeCycleState.CreateInProgress)
                            color of yellow when (PurchaseOrderLifeCycleState.Unreleased)
                            color of yellow when (PurchaseOrderLifeCycleState.ReleaseInProgress)
                            color of green when (PurchaseOrderLifeCycleState.Released)
                            color of gray when (PurchaseOrderLifeCycleState.Closed)
                            color of gray when (PurchaseOrderLifeCycleState.Historical)
                            color of red when (PurchaseOrderLifeCycleState.CancelInProgress)
                            color of red when (PurchaseOrderLifeCycleState.Canceled)
                            color of gray when (PurchaseOrderLifeCycleState.Deleted)
                            color of yellow when (PurchaseOrderLifeCycleState.DeleteInProgress)
                    paragraph
                        BuyerName
                            label is "Buyer"
                        visible when (PurchaseOrderExists)
                            button of icon.mail
                                link is "mailto:<BuyerEmail>"
                            button of icon.phone
                                link is "tel:<BuyerPhone>"
