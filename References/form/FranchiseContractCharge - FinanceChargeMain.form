FinanceChargeMain is a Form
    title is "Main"
    Layout
        header3 of "ChargeDetail"
        three column independent
            column1
                BeginDate
                Frequency
                TaxableFlag
                    label is "Taxable"
            column2
                EndDate
                ProcessLevel
                TaxCode
            column3
                NextCycleDate
                    display only
        paragraph
            visible when (SpecialBasedCharge)
                PaymentAmount
        two column independent
            visible when (SalesBasedCharge)
                column1
                    MinimumAmount
                    MaximumAmount
                column2
                    PercentOfSales
                    BaseAmount
        four column independent
            visible when (NoteBasedCharge)
                column1
                    NumberOfPayments
                        label is "Number_ofPayments"
                    RemainingPayments
                column2
                    NoteAmount
                    InterestRate
                column3
                    CurrentBalance
                    ChargeToDate
                column4
                    BalanceFlag
                    button of "Prepayment"
                        action is CreateChargePrepayment
