MobileQuickRelease is an ActionForm
    action is MobileQuickRelease
    Layout
        display as text
            two column table
                column1
                    PurchaseOrder
                        header2
                    Company.RepresentativeText
                        label is "Company"
                    Vendor.RepresentativeText
                    ShipToLocation.RepresentativeText
                        label is "ShipTo"
                column2
                    PurchaseOrderDate
                        label is "Date"
                    Buyer.Employee.Name.PreferredFirstAndLastName
                        label is "Buyer"
                    visible when (HasPurchaseFromLocation)
                        PurchaseFromLocation.RepresentativeText
                            label is "PurchaseFrom"
                    visible when (HasDefaultDeliveryDate)
                        DefaultDeliveryDate
                            label is "DeliveryDate"
            text of "Order_Total:<MobileTotalWithCurrencyDisplay>"
                header3
                right align
                bold
            header2 of "_"
            button of "ViewPurchaseOrder"
                link is ViewPO
                center
                display as link
