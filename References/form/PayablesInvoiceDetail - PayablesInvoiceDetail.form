PayablesInvoiceDetail is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is PayablesInvoiceDetailContext
        background is theme color
    restrict action Create
    Actions
        navigation is ViewImage
            action icon is preview
            hide when invalid
        action is CreateAssetDetails
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is PayablesInvoiceDetailMain
    Distributions is a Panel
        list is AllDistributionsRel.InvoiceDetailPayablesInvoiceDistributionsList
    ChargesAndAllowances is a Panel
        title is "Charges_andAllowances"
        visible when (not ShowMemoAddOnChargePanel)
        list is PayablesInvoiceAddOnChargeRel.InvoiceAddOnCharges
    AssetDetails is a Panel
        visible when (LinkedToAsset)
        list is PurchaseOrderLineAssetDetailRel.PurchaseOrderLineAssetDetailList
    MemoChargesAndAllowances is a Panel
        title is "Charges_andAllowances"
        visible when (ShowMemoAddOnChargePanel)
        list is PayablesInvoiceAddOnChargeRel.MemoAddOnChargeList
            helper list is OriginalInvoiceAddOnChargeRel.OriginalInvoiceHelperList
                action is CreateMemoCostAdjustment
                    invoked.MemoCompany = Company
                    invoked.MemoInvoice = PayablesInvoice
                action is CreateMemoQuantityAdjustment
                    invoked.MemoCompany = Company
                    invoked.MemoInvoice = PayablesInvoice
    TaxLineItem is a Panel
        visible when (ShowTaxLineItemPanel)
        list is TaxLineItemRel2.TaxLineItemsForPayablesInvoice
    TaxLineItem2 is a Panel
        title is "TaxLineItem"
        visible when (ShowTaxLineItemPanelOneCall)
        list is OneCallTaxLineItemRel2.TaxLineItemsForPayablesInvoice
    OneSourceUserAttributes is a Panel
        visible when (ShowOneSourceAttributesPanel)
        list is OneSourceUserAttributesRel.OneSourceAttributesForPayablesInvoice
