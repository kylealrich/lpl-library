CashLedgerCashReceiptDetailContextForm is a Form
    is primary
    title is "CashReceiptDetail"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        CashCode.CashCodeAndDescription
                            label is "CashCode"
                        CashCode.Currency
                            no label
                    paragraph
                        CashLedgerCashReceiptHeader.Company.OrigCompany.RepresentativeText
                            label is "Company"
                        CashLedgerCashReceiptHeader.Company.OrigCompany.Currency
                            no label
                    paragraph
                        CashLedgerCashReceiptHeader.DepositAmount
                        visible when (CashLedgerCashReceiptHeaderRel.IsUnreleased)
                            CashLedgerCashReceiptHeader.AppliedBankAmount
                                label is "AppliedDistributionBankAmt"
                            CashLedgerCashReceiptHeader.BalanceAmount
                                label is "Balance"
                column2
                    CashLedgerCashReceiptHeader.BankTransactionCode.BankTransactionCodeName
                        label is "TransactionCode"
                column3
                    CashLedgerCashReceiptHeader.TransactionNumber
                        label is "DepositNumber"
