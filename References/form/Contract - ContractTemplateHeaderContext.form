ContractTemplateHeaderContext is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        four column distributed
            paragraph
                ContractGroup
                ContractGroup.ProcurementGroup.Description
                    no label
                    display as text
            visible when (ContractExists)
                paragraph
                    RepresentativeText
                        label is "Template"
                        display as text
            visible when (not ContractExists)
                paragraph
                    Name
            paragraph
                Supplier
                    label is "Supplier"
                Supplier.SupplierName
                    no label
                    display as text
            paragraph
                SupplierSourceId
                    label is "SupplierContact"
                SupplierSourceId.MainContact.FirstAndLastName
                    no label
                    display as text
