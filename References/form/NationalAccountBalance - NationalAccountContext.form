NationalAccountContext is a Form
    title is "NationalAccounts"
    Layout
        paragraph
            Company
                label is "AccountCompany"
            Company.Name
                no label
                display as text
            Company.Currency
                no label
                display as text
            Customer
                label is "AccountCustomer"
                select is CustomerContextCompanyCustomerSelectList
            Customer.Name
                no label
                display as text
        paragraph
            visible when (BOEProcessing)
                BillOfExchangeBalance
                    label is "AccountBOEBalance"
                    display as text
                Company.CustomerGroupField.CustomerGroup.Currency
                    no label
                    display as text
            CurrentPlusBillOfExchangeBalance
                label is "AccountCurrentBalance"
                display as text
            Company.CustomerGroupField.CustomerGroup.Currency
                no label
                display as text
            CreditLimit
                label is "AccountCreditLimit"
            Company.CustomerGroupField.CustomerGroup.Currency
                no label
                display as text
            visible when (BOEProcessing)
                CompanyCustomerRel.BillOfExchangeBalance
                    label is "CustomerBOEBalance"
                    display as text
                Company.Currency
                    no label
                    display as text
            CompanyCustomerRel.CurrentPlusBillOfExchangeBalance
                label is "CustomerBalance"
                display as text
            Company.Currency
                no label
                display as text
            ReceivableHoldCode
                label is "HoldCode"
        blank line
        paragraph
            button of "Statement"
                link is StatementOptions
            button of "OrderEntryCustomer"
                link is OrderEntryCustomer
