ConnectionForm is a Form
    Layout
        two column distributed
            column1
                header3 of "AuthenticationMode"
                DerivedDefaultConnection
                    label is "Default"
                    display as text
                visible when (not MultiTenant)
                    UseIONBackEndService
                        label is "UseIONBackEndService"
                        align as label
                    visible when (UseIONBackEndService)
                        visible when (IONCredentialExists)
                            DerivedIONPrivateKeyFileName
                                label is "ION_Private_Key"
                                display as text
                            DerivedIONCredentialFileName
                                label is "ION_Credentials"
                                display as text
                            UseIDTranslation
                                label is "UseIDTranslation"
                                align as label
                            button of "Update_ION_Private_Key_and_Credentials"
                                action is UploadIONPrivateKeyAndCredentials
                                align as label
                        visible when (not IONCredentialExists)
                            button of "Upload_ION_Private_Key_and_Credentials"
                                action is UploadIONPrivateKeyAndCredentials
                                align as label
                            paragraph
                                visible when (DerivedIONConfigurationWarning entered)
                                    WarningMessageForIONConnectionSetUp
                                        no label
                                        display as tag
                                            color of yellow
                blank line
                header3 of "GenericUserSetup"
                FSMIDMUserExist
                    label is "FSM.\\IDM-\\User"
                    display as tag
                        color of green when (FSMIDMUserExist)
                        color of red when (not FSMIDMUserExist)
                FSMIDMUserRolesExist
                    label is "Application_Administrator_and_\\IDM-\\UserRole"
                    display as tag
                        color of green when (FSMIDMUserRolesExist)
                        color of red when (not FSMIDMUserRolesExist)
                FSMIDMUserIdentityActorExist
                    label is "FSM-\\IDM.\\User_actor_identity"
                    display as tag
                        color of green when (FSMIDMUserIdentityActorExist)
                        color of red when (not FSMIDMUserIdentityActorExist)
                visible when (IsValidForFixFSMIDMGenericUser)
                    GenericUserSetupIncomplete
                        label is "ErrorMessage"
                        display as tag
                            color of red
                    button of "Fix_generic_user" with icon.service
                        action is FixFSMIDMGenericUser
            column2
                button of "Test_Connection"
                    action is TestConnection
                visible when (LastTestConnectionResult entered)
                    LastTestConnectionResult
                        label is "Result"
                        align as label
                        display as text
                        use text area of 30 lines
