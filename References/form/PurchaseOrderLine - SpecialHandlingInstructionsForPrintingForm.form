SpecialHandlingInstructionsForPrintingForm is a Form
    title is "<DerivedEmptyHeader>"
    Layout
        visible when (HasSpecialHandlingCode)
            four column distributed
                column1
                    header5 of "POLine"
                        underline color of black
                column2
                    header5 of "ItemAndDescription"
                        underline color of black
                column3
                    header5 of "SpecialHandlingInstructions"
                        underline color of black
                column4
                    header5 of "HandlingTimeInMinutes"
                        underline color of black
                        center
            four column distributed
                column1
                    DerivedLineNumber
                        no label
                column2
                    DerivedItemAndDescription
                        no label
                column3
                    SpecialHandlingInstructions
                        no label
                column4
                    HandlingTimeInMinutes
                        no label
