DirectForecastContextForm is a Form
    title is "DirectForecast"
    Layout
        single column
            visible when (not ForecastLoadHasBeenRun)
                text of "DirectForecastLoadHasNotBeenRun;LoadActionInAdministrationMenu"
                    bold
                    color of red
        three column distributed
            column1
                CashManagementGroup.LastDirectForecastLoad
                    display as text
                GeneralLedgerCompany
                    label is "GlobalLedgerCompany"
                ForecastBy
            column2
                DirectForecast
                CashManagementAccount
                ReportCurrency
            column3
                ForecastCurrency
                    display as text
                CashAccountGroup
                Description
        three column distributed
            column1
                paragraph
                    ForecastDate
                paragraph
                    CalculateOption
                        display as horizontal radio buttons
                paragraph
                    IncludePayables
                    IncludeReceivables
                    IncludeProcurement
                    IncludeCashLedger
            column2
                paragraph
                    PeriodDays1
                        label is "LessThanPeriod"
                    PeriodDays2
                        label is "NextPeriod"
                    PeriodDays3
                        label is "NextPeriod"
                    PeriodDays4
                        label is "FinalPeriod"
                visible when (IncludePayables)
                    paragraph
                        IncludeDiscount
