CreateFromTemplate is an ActionForm
    action is CreateFromTemplate
        on completion navigate to Vendor
    Layout
        section of Main
            two column distributed
                column1
                    paragraph
                        VendorGroup
                            when value changed
                                VendorTemplate =  first VendorTemplateRel.VendorTemplate
                        VendorGroup.Description
                            no label
                            display as text
                column2
                    VendorTemplate
                        when value changed
                            VendorClass =  VendorTemplate.VendorClass
            two column distributed
                column1
                    paragraph
                        VendorClass
                        VendorClass.Description
                            no label
                            display as text
                column2
                    VendorName
            two column distributed
                column1
                    VendorSearchName
                        label is "SearchName"
                        show up to 20 characters
                column2
                    VendorStatus
            header3 of "Address"
            VendorAddress
                form is PostalAddressShortRequired
            header3 of "BankInformation"
            two column distributed
                column1
                    BankEntity
                        label is "BankEntity"
                column2
                    BankAccountType
            two column distributed
                column1
                    BankAccountNumber
        section of Contact
            single column
                ContactName
                    label is "ContactName"
                    show up to 20 characters
            single column
                EmailAddress
                    label is "Email"
            header3 of "Phone"
            paragraph
                PhoneNumber.InternationalPrefix
                    label is "Country/\\JurisdictionCode"
                    show up to 4 characters
                PhoneNumber.SubscriberNumber
                    label is "Number"
                    show up to 10 characters
                PhoneNumber.Extension
                    show up to 4 characters
            header3 of "Mobile"
            paragraph
                MobileNumber.MobilePhoneNumber.InternationalPrefix
                    label is "Country/\\JurisdictionCode"
                MobileNumber.MobilePhoneNumber.SubscriberNumber
                    label is "Number"
                MobileNumber.SmsEnabled
            header3 of "Fax"
            paragraph
                FaxNumber.InternationalPrefix
                    label is "Country/\\JurisdictionCode"
                    show up to 4 characters
                FaxNumber.SubscriberNumber
                    label is "Number"
                    show up to 10 characters
                FaxNumber.Extension
                    show up to 4 characters
