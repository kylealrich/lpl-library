AdjustmentsExceededReviewForm is a Form
    Actions
        action is Reviewed
            action icon is approve
            hide when invalid
        action is SubmitForApproval
            action icon is approve
            hide when invalid
        action is ManualReject
            action icon is reject
            hide when invalid
        action is Delete
            action icon is delete
        action is refresh
            label is "_"
    Layout
        display as text
            three column distributed
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                    Company.Currency
                        no label
                paragraph
                    ReceivableApplication.Invoice
                    ReceivableApplication.TransType
                        no label
                    ReceivableInvoiceDetailRel.OriginalCurrency
                        no label
            three column distributed
                paragraph
                    ReceivableApplication.DebitCustomer
                        label is "Customer"
                    ReceivableApplication.DebitCustomerName
                        no label
            three column distributed
                paragraph
                    ReceivableApplication.DerivedProcessLevel
                        label is "ProcessLevel"
                paragraph
                    ReceivableApplication.CreditTransaction.CreditCustomer
                        label is "Payment/CreditCustomer"
                    ReceivableApplication.CreditTransaction.CreditCompany
                        no label
            three column distributed
                paragraph
                    ReceivableApplication.DerivedTransactionDate
                        label is "TransactionDate"
                paragraph
                    ReceivableApplication.CreditTransaction.CreditType
                        label is "Payment/Credit"
                    ReceivableApplication.CreditTransaction.CreditNumber
                        no label
                    ReceivableApplication.DerivedCreditCurrency
                        no label
            three column distributed
                paragraph
                    ReceivableInvoiceDetailRel.DueDate
                paragraph
                    ReceivableApplication.GeneralLedgerDate
                        label is "GlobalLedgerDate"
            three column distributed
                paragraph
                    AdjustmentAmount.CurrencyAmount
                        label is "AdjustmentAmount"
                paragraph
                    CreditAdjustAmount
            three column distributed
                paragraph
                    ReceivableApplication.DerivedOpenAmount
                        label is "OpenAmount"
                paragraph
                    ReceivableApplication.ApplicationSource
            single column
                visible when (PfiWorkunitRel.HasProcessIndicator)
                    first PfiWorkunitRel.PfiProcessIndicatorRel.Model
                        no label
                        display as text
