MobileInventoryTransactionLineDistributionForm is a Form
    title is "Distributions"
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            two column table
                column1
                    DerivedCompany
                        label is "Company"
                    DerivedLocation
                        label is "Location"
                    TransactionSystemCode
                        label is "SystemCode"
                    InventoryTransaction
                        label is "Transaction"
                    InventoryTransactionLine.Status
                        label is "Status"
                    visible when (AddOnCharge entered)
                        AddOnCharge
                            label is "AddOnCharge"
                    DistributionDate
                        label is "DistributionDate"
                    MobileGLTransactionAmount
                        label is "TransactionAmount"
                column2
                    DerivedCompanyName
                        label is "CompanyName"
                    DerivedLocationName
                        label is "LocationName"
                    InventoryTransaction.InventoryDocumentType
                        label is "DocumentType"
                    InventoryTransactionLine.LineNumber
                        label is "Line"
                    blank line
                    blank line
                    Status
                        label is "Status"
                    UnitsAmount
                        label is "Quantity"
            single column
                Reference
                    label is "Reference"
                GLBaseAmount
                    form is MobileFinanceCurrencyAmount
