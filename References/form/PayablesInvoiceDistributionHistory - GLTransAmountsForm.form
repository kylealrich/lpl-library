GLTransAmountsForm is a Form
    title is "Amounts"
    Layout
        three column
            column1
                header2 of "Ledger"
                InvoiceCurrency
                    label is "InvoiceCurrency"
                    display as text
                Company.GeneralLedgerCompany.Currency
                    label is "FunctionalCurrency"
                    display as text
            column2
            column3
                header2 of "Tax"
                TaxIndicator
                paragraph
                    TaxCode
                    TaxCode.Description
                        no label
                        display as text
                visible when (TaxCode entered)
                    TaxType
                        label is "Type"
                        display as text
                TaxableAmount
                visible when (TaxCode entered)
                    TaxRate
                        display as text
                paragraph
                    TaxUsageCode
                    TaxUsageCode.Description
                        no label
                        display as text
