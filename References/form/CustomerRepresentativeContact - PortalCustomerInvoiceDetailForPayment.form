PortalCustomerInvoiceDetailForPayment is a CompositeForm
    title is "<DerivedFormTitle>"
    disable field options
    called out actions only
    context form is PortalCustomerInvoiceDetailForPaymentContext
    restrict action Create
    restrict action CreateActorContextForEachCustomerRepresentativeContact
    restrict action CreateActorContextForEachNewCustomerRepresentativeContact
    restrict action CustomerUpdateRequest
    restrict action Delete
    restrict action EmailToCustomerContacts
    restrict action InactivateContact
    restrict action InitializeReceivablePortalPaymentHeader
    restrict action InternallyCreateContacts
    restrict action NewContact
    restrict action ResetCustomerContactPassword
    restrict action UnwindDeclinedPaymentRequest
    restrict action Update
    restrict action UpdateMyContactInformation
    restrict action SendEmailForExternalUserMigrationUsernameChange
    Actions
        action is refresh
            label is "_"
    UnpaidInvoiceDetail is a Panel
        title is "SelectDetailToPay"
        visible when (CustomerEnteredAndCompanyIsNotApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoiceDetailCompanyOnlyOpenRel.PortalPaymentSelectListProviderPaymentCurrencyOnly
    UnpaidInvoiceDetailAcrossCompanies is a Panel
        title is "SelectDetailToPay"
        visible when (CustomerEnteredAndCompanyIsApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivableInvoiceDetailApplyCashAcrossReceivableCompaniesRel.PortalPaymentSelectListProviderPaymentCurrencyOnly
    UnpaidInvoiceDetailForNationalAccount is a Panel
        title is "SelectDetailToPay"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParent)
        list is NationalAccountTransactionsRel.PortalPaymentSelectListProviderPaymentCurrencyOnlyForNationalAccount
    UnpaidInvoiceDetailForNationalAccountWithoutFlags is a Panel
        title is "SelectDetailToPay"
        visible when (CustomerEnteredAndCustomerIsANationalAccountParentWithoutFlags)
        list is NationalAccountTransactionsAcrossCompaniesRel.PortalPaymentSelectListProviderPaymentCurrencyOnlyForNationalAccount
