CopyColumn is an ActionForm
    action is CopyColumn
    Layout
        header3 of "Field_Information"
        single column
            NewColumnOrder
            NewFieldName
            NewDescription
            NewFieldDataType
            visible when (FileCreationSetup.FileType.Separated)
                NewLength
            NewInputOption
            NewComments
        header3 of "Formatting"
        single column
            visible when (not NewFieldDataType.Boolean)
                NewJavaFormat
        visible when (NewFieldDataType.Alpha)
            paragraph
                NewReplacementRegularExpression
                NewReplacementReplaceWith
        visible when (NewFieldDataType.Text)
            paragraph
                NewReplacementRegularExpression
                NewReplacementReplaceWith
        header3 of "SourceValue"
        single column
            NewSourceRelation
            NewSourceFields
            visible when (FileCreationRowDetail.OneToMany)
                NewOneToMany
        visible when (NewFieldDataType.Alpha)
            single column
                visible when (FileCreationSetup.FileType.Separated)
                    NewTruncateToLength
            paragraph
                NewSubstringStart
                    label is "SubstringStart"
                NewSubstringEnd
                    label is "End"
            single column
                NewFileName
                NewConvertToUpperCase
                NewDefaultAlpha
        visible when (NewFieldDataType.Date)
            single column
                NewUseCurrentSystemDate
                NewShowAlphaDefaultField
                visible when (not NewShowAlphaDefaultField)
                    NewDefaultDate
                visible when (NewShowAlphaDefaultField)
                    NewDefaultAlpha
        visible when (NewFieldDataType.Decimal)
            single column
                NewDefaultDecimal
                visible when (ShowTotallingOnCopyColumn)
                    NewTotalThisColumn
            visible when (ShowTotalOutputOnCopyColumn)
                single column
                    text of "ColumnTotal"
                        header4
                    paragraph
                        NewTotalForRow
                            label is "Row"
                        NewTotalForColumn
                            label is "Column"
        visible when (NewFieldDataType.Numeric)
            single column
                NewOneToManySequenceNumber
                NewRecordCount1
                NewRecordCount2
                NewRecordCount3
                NewRecordCount4
                NewRecordCount5
                NewRecordCount6
                NewDefaultNumeric
                visible when (ShowTotallingOnCopyColumn)
                    NewTotalThisColumn
            visible when (ShowTotalOutputOnCopyColumn)
                single column
                    text of "ColumnTotal"
                        header4
                    paragraph
                        NewTotalForRow
                            label is "Row"
                        NewTotalForColumn
                            label is "Column"
        visible when (NewFieldDataType.Time)
            single column
                NewUseCurrentSystemTime
                NewShowAlphaDefaultField
                visible when (not NewShowAlphaDefaultField)
                    NewDefaultTime
                visible when (NewShowAlphaDefaultField)
                    NewDefaultAlpha
        visible when (NewFieldDataType.TimeStamp)
            single column
                NewUseCurrentSystemTimeStamp
                NewDefaultTimeStamp
        visible when (NewFieldDataType.Boolean)
            single column
                NewDefaultBoolean
        visible when (NewFieldDataType.Text)
            single column
                DefaultText
        visible when (FileCreationSetup.UseAuditInformation)
            visible when (NewInputOption.FieldOptional)
                single column
                    NewExcludeFieldWhenDeterminingIfRowChanged
                header3 of "AlternateFieldsToIdentifyThatThisColumnChanged"
                three column
                    NewAlternateChangedField1
                        no label
                        align as label
                    NewAlternateChangedField2
                        no label
                    NewAlternateChangedField3
                        no label
            visible when (NewInputOption.FieldRequired)
                single column
                    NewExcludeFieldWhenDeterminingIfRowChanged
                header3 of "AlternateFieldsToIdentifyThatThisColumnChanged"
                three column
                    NewAlternateChangedField1
                        no label
                        align as label
                    NewAlternateChangedField2
                        no label
                    NewAlternateChangedField3
                        no label
        header3 of "IncludeDataMapping"
        single column
            CopyDataMapping
