SubmitModifiedInvoiceForApproval is an ActionForm
    action is SubmitModifiedInvoice
    title is "SubmitInvoiceForApproval"
    Layout
        display as text
            three column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                    Invoice
                column2
                    Vendor.RepresentativeText
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                column3
                    DueDate
                    button of "EditInvoice"
                        link is PayablesInvoicePrimary
                        is primary
        visible when (InvoiceToBeReleased)
            single column
                text of "NoInvoiceRoutingRuleFound.InvoiceWillBeReleased."
                    bold
                text of "IfRoutingRulesHaveBeenUpdated,Run_\\Update_\\Invoices_\\Requiring_\\ApprovalAction."
                    bold
        visible when (InvoiceToBeMatched)
            single column
                text of "NoInvoiceRoutingRuleFound.InvoiceWillBeMatched."
                    bold
                text of "IfRoutingRulesHaveBeenUpdated,Run_\\Update_\\Invoices_\\Requiring_\\ApprovalAction."
                    bold
        visible when (ExpenseInvoiceOutOfBalance)
            single column
                text of "Warning:TotalDistributionAmountOf<TotalDistributionAmount.TransactionTotal>IsNotEqualToInvoiceAmountOf<InvoiceAmount.CurrencyAmount>."
                    bold
            blank line
        visible when (MatchInvoiceOutOfBalance)
            single column
                text of "Warning:MatchTotalOf<DerivedMatchTotals>IsNotEqualToInvoiceAmountOf<InvoiceAmount.CurrencyAmount>."
                    bold
            blank line
        header3 of "RoutingInformation"
        display as text
            three column distributed
                RoutingCategory.RepresentativeText
                visible when (RoutingFinanceTeamEntered)
                    RoutingFinanceTeam
                visible when (RoutingFinanceTeamMember.TeamMemberEntered)
                    RoutingFinanceTeamMember.TeamMember.PreferredFirstAndLastName
                        label is "RoutingTeamMember"
            three column distributed
                visible when (ApprovalCostCenterEntered)
                    ApprovalCostCenter
                visible when (ApprovalCategoryEntered)
                    ApprovalCategory
        visible when (RoutingRuleFound)
            three column distributed
                visible when (DerivedAutoApprove)
                    text of "Auto_Approve"
                        bold
                visible when (DerivedAutoAssignedRoutingCodeEntered)
                    DerivedAutoAssignedRoutingCode
                        label is "ApprovalCode"
                        display as text
                visible when (DerivedAutoAssignedRoutingCodeGroupEntered)
                    DerivedAutoAssignedRoutingCodeGroup
                        label is "ApprovalCodeGroup"
                        display as text
            header3 of "OverrideDefaultApprovalInformation"
            single column
                ApprovalOptions
                    no label
                    display as horizontal radio buttons
            visible when (ApprovalOptions.ApprovalCode)
                paragraph
                    RoutingCodePrm
                    RoutingCodePrm.Description
                        no label
                        display as text
            visible when (ApprovalOptions.ApprovalCodeGroup)
                paragraph
                    PrmRoutingCodeGroup
                    PrmRoutingCodeGroup.Name
                        no label
                        display as text
            blank line
            single column
                CommentPrm
                    use text area of 5 lines
