MPurchaseOrderLineCompositeContext is a Form
    title is "PurchaseOrderLineCompositeContext"
    Layout
        single column
            display as text
                paragraph
                    Company
                    Company.Name
                        no label
                    visible when (false)
                        FinanceEnterpriseGroup
                paragraph
                    PurchaseOrder
                    PurchaseOrder.PurchaseOrderRevision
                        label is "Revision"
                    LineNumber
                paragraph
                    PurchaseOrder.PurchaseFromLocation
                        label is "PurchaseFrom"
                    PurchaseOrder.PurchaseFromLocation.VendorName
                        no label
            visible when (not IsInventoryType)
                paragraph
                    DistributionBy
            display as text
                paragraph
                    PurchaseOrder.Buyer
                    PurchaseOrder.Buyer.Name
                        no label
                paragraph
                    PurchaseOrder.Vendor
                    PurchaseOrder.Vendor.VendorName
                        no label
                paragraph
                    PurchaseOrder.ShipToLocation
                        label is "ShipTo"
                    PurchaseOrder.ShipToLocationName
                        no label
            display as text
                PurchaseOrder.PurchaseOrderDate
                PurchaseOrder.DefaultDeliveryDate
                    label is "DeliveryDate"
                paragraph
                    PurchaseOrder.CalculateTotalAmount
                        label is "PurchaseOrderTotal"
                    PurchaseOrder.Currency
                        no label
                paragraph
                    PurchaseOrder.DerivedPurchaseOrderStatus
                        label is "POStatus"
                    DerivedStatus
                        label is "LineStatus"
                visible when (CancelledStatus)
                    text of "Cancelled"
                        italics
                        color of blue
                visible when (ReturnedStatus)
                    text of "Returned"
                        italics
                        color of blue
                visible when (CancelledOrReturnedStatus)
                    text of "Cancelled/Returned"
                        italics
                        color of blue
                visible when (AssetTemplateExists)
                    visible when (AssetDefaultExists)
                        single column
                            button of "ManageAssetDefaults"
                                link is AssetDefaults
                    visible when (not AssetDefaultExists)
                        single column
                            button of "CreateAssetDefaults"
                                action is CreateAssetDefaults
                paragraph
                    visible when (MissingDistribution)
                        MissingDistributionMsg
                            no label
                            display as tag
                                color of yellow
                visible when (DistributionsExistButNotInBalance)
                    paragraph
                        RemainingToBeDistributed
                            no label
                        visible when (DistributionBy.ByQuantity)
                            RemainingQuantityToBeDistributed
                                no label
                            EnteredBuyUOM
                                no label
                        visible when (DistributionBy.ByAmount)
                            RemainingAmountToBeDistributed
                                no label
                            PurchaseOrder.Currency
                                no label
                        visible when (DistributionBy.ByPercent)
                            RemainingPercentToBeDistributed
                                no label
                paragraph
                    visible when (OriginalItemExists)
                        SubstituteItemMsg
                            no label
                            display as tag
                                color of yellow
                paragraph
                    visible when (ItemIsBackorderedForOpenPOLine)
                        VendorBackorderMessage
                            no label
                            display as tag
                                color of yellow
