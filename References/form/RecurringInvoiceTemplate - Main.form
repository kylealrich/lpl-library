Main is a Form
    Layout
        four column distributed
            column1
                ReceivableInvoiceType
                    label is "Type"
                paragraph
                    CreditDebitMemoReason
                        label is "MemoReason"
                        select is ReceivableReasonCodeMemoList
                        display as required when (IsMemoReasonRequired)
                    CreditDebitMemoReason.Description
                        no label
                        display as text
                InvoiceEntryTemplate
                visible when (ReceivableInvoiceType.MixedSignLines)
                    AlternateReceivableInvoiceType
                        display as required
            column2
                paragraph
                    ReceivableProcessLevel
                        label is "ProcessLevel"
                        select is ProcessLevels
                    ReceivableProcessLevel.Name
                        no label
                        display as text
                OriginalCurrency
                    label is "Currency"
                InvoiceAmount
                    label is "InvoiceAmount"
            column3
                paragraph
                    InvoiceTypeCode
                        select is CustomerInvoiceTypeCodeList
                    InvoiceTypeCode.Description
                        no label
                        display as text
                visible when (not HasRecurringInvoiceTemplate)
                    ReceivableDistributionCategory
                        label is "DistributionCategory"
                visible when (HasRecurringInvoiceTemplate)
                    ReceivableDistributionCategory
                        label is "DistributionCategory"
                        display only
                Status
                    label is "InvoiceStatus"
            column4
                paragraph
                    ReceivableGeneralLedgerCode
                        label is "AccountsReceivableCode"
                    ReceivableGeneralLedgerCode.Description
                        no label
                        display as text
                paragraph
                    GlobalDocumentType
                        label is "DocumentTypeCode"
                        select is DocumentTypeCodes
                    GlobalDocumentType.Description
                        no label
                        display as text
        header2 of "FrequencyControl"
        four column distributed
            column1
                Frequency
                visible when (Frequency.Yearly)
                    BillMonth
                        display as required
                visible when (Frequency.Quarterly)
                    BillMonth
                        display as required
                visible when (Frequency.Monthly)
                    BillDay
                        display as required
                visible when (Frequency.SemiMonthly)
                    BillDay
                        display as required
                visible when (Frequency.Yearly)
                    BillDay
                        display as required
                visible when (Frequency.Quarterly)
                    BillDay
                        display as required
                visible when (Frequency.Weekly)
                    BillDayOfWeek
                        display as required
            column2
                StartDate
                visible when (not IsDisplayOnlyStopDate)
                    StopDate
                visible when (IsDisplayOnlyStopDate)
                    StopDate
                        display only
            column3
                visible when (not IsDisplayOnlyNumberOfInvoices)
                    NumberOfInvoices
                visible when (IsDisplayOnlyNumberOfInvoices)
                    NumberOfInvoices
                        display only
            column4
                CycleCode
