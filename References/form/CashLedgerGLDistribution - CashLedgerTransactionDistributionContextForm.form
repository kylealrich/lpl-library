CashLedgerTransactionDistributionContextForm is a Form
    title is "CashLedgerTransactionDistribution"
    Layout
        display as text
            two column distributed
                column1
                    paragraph
                        CashCode.CashCodeAndDescription
                            label is "CashCode"
                        CashCode.Currency
                            no label
                    CashLedgerTransactionRel.TransactionNumber
                    paragraph
                        CashLedgerTransactionRel.IssuedBankAmount
                            label is "Amount"
                        visible when (CashLedgerReturnedPaymentRel.IsUnreleased)
                            CashLedgerTransactionRel.AppliedDistributionBankAmount
                                label is "AppliedAmount"
                            CashLedgerTransactionRel.BalanceAmount
                                label is "Balance"
                column2
                    CashLedgerGLDistribution.BankTransactionCode.BankTransactionCodeName
                        label is "TransactionCode"
                    paragraph
                        CashLedgerTransactionRel.Company.OrigCompany.RepresentativeText
                            label is "Company"
                        CashLedgerTransactionRel.Company.OrigCompany.Currency
                            no label
