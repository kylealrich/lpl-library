Charge is a Form
    Layout
        single column
            header2 of "ChargeDetail"
            paragraph
                ItemCharge
                    label is "ChargeAmount"
                    display as text
            paragraph
                TaxAmount
                    display as text
            paragraph
                TotalAddOnChargeCost
                    label is "AddOnChargeAmount"
                    display as text
            paragraph
                CommodityCode
                CommodityCode.CcDescription
                    no label
                    display as text
            paragraph
                DiversityCode
                DiversityCode.Description
                    no label
                    display as text
            paragraph
                UNSPSCCode
                    label is "U\\N\\S\\P\\S\\C"
                    compact format
                UNSPSCCode.ShortDescription
                    no label
                    display as text
            paragraph
                IncomeCode
                IncomeCode.Description
                    no label
                    display as text
            paragraph
                Manufacturer
                    label is "ManufacturerInformation"
                    compact format
                Manufacturer.Description
                    no label
                    display as text
            paragraph
                ManufacturerNumber
            paragraph
                MerchantCategoryCode
            paragraph
                ProcurementCardReasonCode
                    label is "ReasonCode"
                ProcurementCardReasonCode.Description1
                    no label
                    display as text
                ProcurementCardReasonCode.Description2
                    no label
                    display as text
            paragraph
                Merchant.TaxID
                    label is "TaxID"
                    display as text
            paragraph
                TaxIndicator
            visible when (IsNotPurchaseOrderCharges)
                paragraph
                    DistributionCompanyAndCode
                        compact format
                    DistributionCompanyAndCode.DistributionCode.Description
                        no label
                        display as text
