UserFolder_Translation is a Form
    is primary
    Layout
        paragraph
            Base_BusinessClass.UserFolder
                display as text
        single column
            IsoLocale
                compact format
                raise yellow alert when (VerifyTranslations)
                    mouse over text is untranslatable:"The base data has been changed but this translation has not been verified"
        single column
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.Name
                label is untranslatable:"Name"
            Name
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.ReportCategory
                label is untranslatable:"Report Sub Category"
            ReportCategory
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translations for {0}"
            Base_BusinessClass.TransSnapshotItemReportDefInfo.ReportName
                label is untranslatable:"Report Name"
            TransSnapshotItemReportDefInfo.ReportName
                label is untranslatable:"Translated"
            blank line
            Base_BusinessClass.TransSnapshotItemReportDefInfo.Description
                label is untranslatable:"Description"
            TransSnapshotItemReportDefInfo.Description
                label is untranslatable:"Translated"
