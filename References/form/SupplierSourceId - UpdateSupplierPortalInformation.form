UpdateSupplierPortalInformation is an ActionForm
    action is UpdateSupplierPortalInformation
    title is "UpdateSupplierInformation"
    Layout
        paragraph
            Supplier
                label is "SupplierNumber"
                display as text
            ParmSupplierName
                label is "Name"
        two column
            ParmDBA
                label is "DoingBusinessAs"
            ParmDAndB
                label is "Dun&Bradstreet"
        two column
            ParmBusinessType
                label is "BusinessType"
        two column
            paragraph
                ParmTaxIDType
                    label is "TaxIDType"
                ParmTaxIDType.Description
                    no label
                    display as text
            ParmTaxID
                label is "TaxID"
        single column
            ParmTaxCertification.File
                label is "Attach<TaxCertificationLabel>"
        two column
            ParmVATCountry
                label is "VATRegistrationCountry/\\Jurisdiction"
            ParmVATNumber
                label is "VATRegistrationNumber"
        two column
            visible when (SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                ParmGLN
                    label is "GlobalLocationNumber"
            ParmURL
                label is "Website"
