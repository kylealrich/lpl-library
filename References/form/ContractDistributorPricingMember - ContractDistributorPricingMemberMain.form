ContractDistributorPricingMemberMain is a Form
    is primary
    title is "ContractDistributorPricingMember"
    Layout
        display as text
            four column distributed
                column1
                    Contract.RepresentativeText
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                column3
                    Contract.WorkingContractID
                column4
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        header2 of "_"
        paragraph
            ContractDistributorPricingMember.Company
            CompanyName
                no label
        paragraph
            ContractDistributorPricingMember.Location
                label is "Location"
            LocationName
                no label
        paragraph
            ContractDistributorPricingMember.RequestingLocation
                label is "RequestingLocation"
            RequestingLocationName
                no label
        paragraph
            ContractDistributorPricingMember.PricingGroup
            PricingGroupDescription
        paragraph
            Contract.Supplier
            ContractRel.Supplier.SupplierName
                label is "Supplier"
        paragraph
            PricingIdentifier
            PricingIdentifier.Title
                display as text
        display as text
            single column
                Released
            visible when (FromMfgContract)
                header2 of "ManufacturerContractInformation"
                two column
                    MfgContractTierInfo.MfgContract
                        label is "ContractNumber"
                    MfgContractTierInfo.MfgContract.Name
                        no label
                single column
                    visible when (MfgContractTierInfo.MfgContract.WorkingContractUnique)
                        MfgContractTierInfo.MfgContract.WorkingContractID
                two column
                    MfgContractTierInfo.Tier
                        label is "Tier"
                    MfgContractTierInfo.Tier.TierTitle
                        no label
