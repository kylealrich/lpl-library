RequestNewCustomer is an ActionForm
    action is RequestNewCustomer
    title is "NewCustomer"
    Layout
        header2 of "RequestNewCustomer"
        visible when (actor.initiator)
            header4 of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_created"
        visible when (not actor.initiator)
            display as text
                single column
                    RequestedBy
                two column table
                    column1
                        button of "<RequesterEmail>"
                            link is "mailto:<RequesterEmail>"
                            label is "Email"
                            display as link
                        NeededBy
                    column2
                        button of "<RequesterPhone.SubscriberNumber>"
                            link is "tel:<RequesterPhone.SubscriberNumber>"
                            label is "Phone"
                            display as link
                        RequestPriority
                            label is "Priority"
                            display as tag
                                color of red when (RequestPriority.High)
                                color of yellow when (RequestPriority.Medium)
                                color of green when (RequestPriority.Low)
        visible when (actor.initiator)
            two column table
                column1 of 50%
                    RequestPriority
                        label is "Priority"
                column2 of 50%
                    NeededBy
        visible when (not actor.initiator)
            two column table
                column1 of 50%
                    CustomerGroup
                column2 of 50%
                    CustomerGroup.CustomerBusinessGroup.Description
                        no label
                        display as text
        visible when (not actor.initiator)
            visible when (Customer entered)
                single column
                    Customer
                        display as text
        single column
            Name
                label is "CustomerName"
        two column table
            column1
                PrmSearchName
                    label is "SearchName"
                    show up to 15 characters
            column2
                PrmLegalName
                    label is "LegalName"
                    show up to 15 characters
        single column
            Notes
        single column
            PrmTaxID
                label is "TaxID"
        two column table
            column1
                VATRegistrationCountry
                    label is "V\\A\\TCountry/\\Jurisdiction"
            column2
                VATRegistrationNumber
                    label is "V\\A\\TNumber"
                    show up to 10 characters
        header3 of "Address"
        PrmPostalAddress
            form is PostalAddressMinimum
        header3 of "ContactInformation"
        two column distributed
            column1 of 60%
                paragraph
                    PrmContact
                        label is "ContactName"
                        show up to 15 characters
                    ContactTitle
                        show up to 15 characters
                visible when (not actor.initiator)
                    display as text
                        paragraph
                            PhoneNumber.InternationalPrefix
                                label is "PhoneCountry/\\JurisdictionCode"
                                show up to 6 characters
                            PhoneNumber.SubscriberNumber
                                label is "PhoneNumber"
                                show up to 10 characters
                            PhoneNumber.Extension
                                show up to 4 characters
                visible when (actor.initiator)
                    paragraph
                        PhoneNumber.InternationalPrefix
                            label is "PhoneCountry/\\JurisdictionCode"
                            show up to 4 characters
                        PhoneNumber.SubscriberNumber
                            label is "PhoneNumber"
                            show up to 10 characters
                        PhoneNumber.Extension
                            show up to 4 characters
                visible when (not actor.initiator)
                    display as text
                        paragraph
                            MobileNumber.MobilePhoneNumber.InternationalPrefix
                                label is "MobileCountry/\\JurisdictionCode"
                                show up to 6 characters
                            MobileNumber.MobilePhoneNumber.SubscriberNumber
                                label is "MobileNumber"
                                show up to 10 characters
                            MobileNumber.SmsEnabled
                                label is "SmsEnabled"
                visible when (actor.initiator)
                    paragraph
                        MobileNumber.MobilePhoneNumber.InternationalPrefix
                            label is "MobileCountry/\\JurisdictionCode"
                            show up to 4 characters
                        MobileNumber.MobilePhoneNumber.SubscriberNumber
                            label is "MobileNumber"
                            show up to 10 characters
                        MobileNumber.SmsEnabled
                            label is "SmsEnabled"
                visible when (not actor.initiator)
                    display as text
                        paragraph
                            FaxNumber.InternationalPrefix
                                label is "FaxCountry/\\JurisdictionCode"
                                show up to 6 characters
                            FaxNumber.SubscriberNumber
                                label is "FaxNumber"
                                show up to 10 characters
                            FaxNumber.Extension
                                show up to 4 characters
                visible when (actor.initiator)
                    paragraph
                        FaxNumber.InternationalPrefix
                            label is "FaxCountry/\\JurisdictionCode"
                            show up to 4 characters
                        FaxNumber.SubscriberNumber
                            label is "FaxNumber"
                            show up to 10 characters
                        FaxNumber.Extension
                            show up to 4 characters
                PrmEmailAddress
                    label is "EmailAddress"
                URLAddress
            column2 of 40%
                TwitterID
                SocialNetworkID2
                SocialNetworkID3
                SocialNetworkID4
                SocialNetworkID5
        header4 of "_"
        single column
            Logo.File
                label is "Logo"
                display as full image up to 5 lines
                    missing image is missingpicture96px
        paragraph
            TransientAttachment.File
                label is "Attachment"
        single column
            TransientAttachmentComment
                use text area of 3 lines
