Receiver is a Form
    Layout
        display as text
            two column distributed
                Vendor.DerivedVendorNameID
                paragraph
                    DerivedPurchaseFromLocationRepresentativeText
                        label is "PurchaseFrom"
                    ShipToArriveDate
                        label is "ShipToArrive"
            paragraph
                PurchaseOrder.BuyerEmployeeRel.FirstLastName
                    label is "Buyer"
                visible when (PurchaseOrder.BuyerEmployeeRel.EmployeeWorkPhoneExists)
                    PurchaseOrder.BuyerEmployeeRel.EmployeeWorkTelephone
                        label is "WorkPhone"
                    button of icon.phone
                        link is "tel:<PurchaseOrder.BuyerEmployeeRel.EmployeeWorkTelephone>"
                visible when (PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddressExists)
                    PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddress
                        label is "EmailAddress"
                    button of icon.mail
                        link is "mailto:<PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddress>"
        visible when (not ReceiptExists)
            two column distributed
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                PurchaseOrder
                    select is ReleasedPurchaseOrders
        two column distributed
            ReferenceNumber
                label is "Reference"
            paragraph
                ReprintReceipt
                PurchaseOrder.FreightTerm.Description
                    label is "FreightTerms"
                    display as text
        two column distributed
            ReceivedDate
                label is "Date_andTimeReceived"
            paragraph
                ShipToLocation
                    label is "ReceivedLocation"
                ShipToLocation.Name
                    no label
                    display as text
        two column distributed
            paragraph
                Carrier
                Carrier.VendorName
                    no label
                    display as text
            TransientBillOfLading
                label is "Bill_ofLading"
        two column distributed
            PackageTrackingNumber
                label is "TrackingNumber"
            PackageTrackingLabel
                label is "Labels"
        two column distributed
            GlobalDocumentType
                label is "DocumentTypeCode"
                display as text
            visible when (Vendor.RequireMatchReference)
                MatchReferenceNumber
        visible when (Company.UseIDM)
            paragraph
                IDMPrinter
                IDMPrinter.Description
                    no label
                    display as text
