MMain is a Form
    title is "Main"
    Layout
        header3 of "LineDetail"
        two column distributed
            TransactionDate
                display as text
            Status
                display as text
        two column distributed
            Merchant
                display as text
            Merchant.Name
                display as text
        single column
            ProcurementCardStatement.OrderDate
                display as text
        two column distributed
            PostDate
            ApprovedDate
        visible when (IsPurchaseOrderCharges)
            two column distributed
                PurchaseOrder
                    label is "P\\ONumber"
                    display as text
                PurchaseOrderLine
                    label is "P\\OLine"
                    display as text
            two column distributed
                Item
                    display as text
                ItemDescription
                    no label
                    display as text
            two column distributed
                Vendor
                    display as text
                Vendor.VendorName
                    no label
                    display as text
            two column distributed
                VendorItem
                    display as text
                VendorItemDescription
                    no label
                    display as text
            two column distributed
                VendorBuyUOM
                    display as text
                VendorBuyUOM.Description
                    no label
                    display as text
            two column distributed
                VendorPriceUOM
                VendorPriceUOM.Description
                    no label
                    display as text
            three column distributed
                display as text
                    Quantity
                    UnitCost
                    ItemTotal
