PurchaseOrderDashboardContext is a Form
    Layout
        display as text
            five column distributed
                column1
                    visible when (Vendor.HasLogo)
                        Vendor.Logo.File
                            no label
                            display as portrait image
                column2
                    paragraph
                        button of "<PurchaseOrder>"
                            link is ViewPO
                            label is "PurchaseOrder"
                            display as link
                        PurchaseOrderRevision
                            label is "Revision"
                    paragraph
                        Company.DerivedCompanyIDName
                            label is "Company"
                    paragraph
                        Buyer.Employee.FirstLastName
                            label is "Buyer"
                        visible when (PurchaseOrderExists)
                            button of icon.profile
                                link is BuyerNav
                            button of icon.mail
                                visible when (Buyer.Employee.EmployeeWorkEmailAddressExists)
                                link is "mailto:<Buyer.Employee.EmployeeWorkEmailAddress>"
                            button of icon.phone
                                visible when (Buyer.Employee.EmployeeWorkPhoneExists)
                                link is "tel:<Buyer.Employee.EmployeeWorkTelephone>"
                column3
                    PurchaseOrderDate
                    visible when (HasIssuedDocument)
                        visible when (HasExistingPODocument)
                            button of "View"
                                view first LatestPODocumentRel.Attachment.File
                                label is "Document"
                                display as link
                        visible when (HasIDMDocument)
                            button of "View"
                                link is external "<DerivedIDMDocumentLink>"
                                label is "Document"
                                display as link
                    paragraph
                        Vendor.DerivedVendorNameID
                    visible when (PurchaseFromLocationVendorAddressEntered)
                        paragraph
                            DerivedPurchaseFromLocationRepresentativeText
                                label is "PurchaseFromLocation"
                    visible when (not PurchaseFromLocationVendorAddressEntered)
                        PurchaseFromLocation
                            label is "PurchaseFromLocation"
                column4
                    paragraph
                        CalculateTotalAmount
                            label is "Total"
                        Currency
                            no label
                    paragraph
                        ShipToLocation.DerivedNameID
                            label is "ShipToLocation"
                    Reference1
                column5
                    paragraph
                        DerivedPurchaseOrderStatus
                            label is "Status"
                        DerivedStatusDate
                            no label
                    DefaultDeliveryDate
                        label is "DeliveryDate"
                    Reference2
