InvoiceLineItems is a Form
    Layout
        three column distributed
            column1
                visible when (LineType.Special)
                    Item
                        show up to 20 characters
                    ItemDescription
                        label is "Description"
                visible when (not LineType.Special)
                    Item
                        show up to 20 characters
                    ItemDescription
                        label is "Description"
                        display as text
                StartDate
            column2
                Quantity
                SellingUnitOfMeasure
                    label is "U\\O\\M"
                StopDate
            column3
                LineType
                UnitPrice
                ZeroAfterUse
        header2 of "SalesData"
        three column distributed
            column1
                paragraph
                    Territory
                    Territory.Description
                        no label
                        display as text
                CommissionSplitPercentage
                    label is "CommissionSplit"
            column2
                paragraph
                    SalesRepresentative
                        label is "SalesRepresentative1"
                    SalesRepresentative.Name
                        no label
                        display as text
                CommissionRate1
                    label is "Commission"
            column3
                paragraph
                    SalesRepresentative2
                    SalesRepresentative2.Name
                        no label
                        display as text
                CommissionRate2
                    label is "Commission"
        header2 of "Tax"
        three column distributed
            TaxExemptCode
            paragraph
                TaxCode
            visible when (IsHSNSACCodeEnabled)
                paragraph
                    HSNSACCode
                    HSNSACCode.Description
                        no label
                        display as text
