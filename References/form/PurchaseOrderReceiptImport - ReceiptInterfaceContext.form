ReceiptInterfaceContext is a Form
    Layout
        three column distributed
            column1
                visible when (RecordExists)
                    paragraph
                        Company.PurchasingCompany.RepresentativeText
                            label is "Company"
                            display as text
                    paragraph
                        PurchaseOrderReceiptImport
                            label is "ReferenceNumber"
                            display as text
                visible when (not RecordExists)
                    paragraph
                        Company
                        Company.PurchasingCompany.Name
                            no label
                            display as text
                    paragraph
                        PurchaseOrderReceiptImport
                            label is "ReferenceNumber"
                paragraph
                    Vendor
                        select is ActiveVendorsByName
                    Vendor.VendorName
                        no label
                        display as text
                paragraph
                    visible when (not HasInterfacedReceiptWithLines)
                        PurchaseOrder
                    visible when (HasInterfacedReceiptWithLines)
                        PurchaseOrder
                            display only
                    POCode
            column2
                visible when (HasInvalidDetailRecords)
                    text of "<HasInvalidDetailRecordsMsg>"
                        bold
                        italics
                        color of red
                visible when (not HasInvalidDetailRecords)
                    text of "_"
                RunGroup
                InterfacedVendor
                InterfacedPurchaseOrder
            column3
                visible when (RecordInError.ErrorsExist)
                    text of "_"
                    paragraph
                        ErrorLevel
                            display as text
                    paragraph
                        ErrorMessage
                            display as tag
                                color of red
                visible when (RecordInError.ErrorsExist)
                    text of "_"
                visible when (IsPartiallyImported)
                    button of "ViewPartiallyInterfacedReceipt"
                        link is PartiallyInterfacedReceiptNav
                        display as link
