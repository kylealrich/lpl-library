CreateAPInvoicesForLeasePayments is an ActionForm
    action is CreateAPInvoicesForLeasePayments
    title is "CreatePayablesInvoicesForLeasePayments"
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
            visible when (LeaseCompanyGroup.Lease)
                paragraph
                    Company
                        select is PayablesCompanyList
                    Company.Name
                        no label
                        display as text
                paragraph
                    Lease
                        select is AllLeases
                    Lease.Description
                        no label
                        display as text
            visible when (LeaseCompanyGroup.CompanyGroup)
                paragraph
                    CompanyGroup
                        label is "CompanyGroup"
                        select is CompanyGroupsInFinanceEnterpriseGroup
                    CompanyGroup.Description
                        no label
                        display as text
        two column distributed
            column1
                LeaseClass
                    label is "LeaseClassification"
            column2
                paragraph
                    LeaseType
                    LeaseType.Description
                        no label
                        display as text
        two column distributed
            InvoiceDate
            DistribDate
                label is "PostingDate"
        two column distributed
            DueDate
            Update
        single column
            SortOption
                label is "Sort"
        single column
            CreatePaymentsForRenewal
                label is "CreateMonthlyRenewalPayments"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CreateAPInvoicesForLeasePaymentsReport_RDG
                PayablesInvoiceForLeasePaymentErrorReport_RDG
            column2 of 25%
                CreateAPInvoicesForLeasePaymentsReport_XPT
                PayablesInvoiceForLeasePaymentErrorReport_XPT
