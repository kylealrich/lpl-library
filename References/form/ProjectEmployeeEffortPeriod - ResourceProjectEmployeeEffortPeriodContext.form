ResourceProjectEmployeeEffortPeriodContext is a Form
    Layout
        single column
            paragraph
                DateRange.Begin
                    label is "PeriodBeginDate"
                    header3
                    display as text
                DateRange.End
                    label is "PeriodEndDate"
                    header3
                    display as text
                LaborPeriodCount
                    label is "NumberOfLaborPeriods"
                    header3
                    display as text
                TotalEffortPercent
                    header3
                    display as text
                StatusMessage
                    no label
                    display as tag
                        color of yellow when (not Certified)
                        color of green when (Certified)
            visible when (Certified)
                paragraph
                    first ProjectAssignmentEffortRel.DateCertified
                        label is "Certified"
                        display as text
                    first ProjectAssignmentEffortRel.CertifyingActor
                        label is "By"
                        display as text
