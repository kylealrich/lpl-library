BillingInterface is an ActionForm
    action is BillingInterface
    Layout
        single column
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            text of "Or"
            paragraph
                CompanyGroup
                    label is "CompanyGroup"
                CompanyGroup.Description
                    no label
                    display as text
            paragraph
                ProcessLevel
                    select is ProcessLevels
                ProcessLevel.Name
                    no label
                    display as text
            paragraph
                CurrencyCd
                    label is "Currency"
                CurrencyCd.Description
                    no label
                    display as text
            Description
            UpdateOption
            visible when (not Company.ManualInvoiceNumbering)
                ReleaseOption
            ProcessComments
            ProcessAoc
                label is "ProcessAdd\\-onCharges"
            CertNbrOption
                label is "PrintCertificationNumber"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                BillingInterfaceReport_RDG
                BillingInterfaceListing_RDG
            column2 of 25%
                BillingInterfaceReport_XPT
                BillingInterfaceListing_XPT
