PeriodEndTransReconDetailCompositeForm is a Form
    title is "ReconciliationTransaction"
    Layout
        display as text
            visible when (ReconciliationAccount.LevelType.Group)
                paragraph
                    ReconciliationAccount.ReconciliationGroup
                        display only
            visible when (ReconciliationAccount.LevelType.NonAccount)
                paragraph
                    ReconciliationAccount.NonAccountReconciliation
                        display only
            visible when (ReconciliationAccount.IsAccountWithinGroup)
                paragraph
                    ReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
                        display only
            visible when (ReconciliationAccount.LevelType.Account)
                paragraph
                    ReconciliationAccount.ReconciliationCodeBlock
                        display only
                    ReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                        no label
                        display as text
            two column
                LineMatchField
                paragraph
                    GeneralLedgerClosePeriod
                        label is "Period"
                    GeneralLedgerClosePeriod.PeriodName
                        no label
                        display as text
            paragraph
                MatchedDate
                    display as text
                MatchedActor
                    display as text
                MatchedActor.PersonName.PresentationName
                    no label
                    display as text
                DerivedMatchedMessage
                    no label
                    display as text
            visible when (SummaryRecord)
                visible when (ReconciliationAccount.LoadGeneralLedgerTransactions)
                    three column distributed
                        column1
                            GeneralLedgerDebitAmount
                                label is "GlobalLedgerDebitAmount"
                        column2
                            GeneralLedgerCreditAmount
                                label is "GlobalLedgerCreditAmount"
                        visible when (not ReconciliationAccount.LoadInterfaceTransactions)
                            column3
                                NetReconciledDifference
                        visible when (ReconciliationAccount.LoadInterfaceTransactions)
                            column3
                                BlankField
                                    no label
                visible when (ReconciliationAccount.LoadInterfaceTransactions)
                    three column distributed
                        column1
                            InterfacedTransactionDebitAmount
                        column2
                            InterfacedTransactionCreditAmount
                        visible when (not ReconciliationAccount.LoadGeneralLedgerTransactions)
                            column3
                                NetReconciledDifference
                        visible when (ReconciliationAccount.LoadGeneralLedgerTransactions)
                            column3
                                BlankField
                                    no label
                visible when (ReconciliationAccount.LoadingBothGLAndInterfaceTransactions)
                    three column distributed
                        column1
                            NetReconciledDebitAmount
                        column2
                            NetReconciledCreditAmount
                        column3
                            NetReconciledDifference
            blank line
