PayablesInvoiceTaxDrillForm is a Form
    title is "PayablesInvoiceTax"
    restrict action Create
    restrict action Update
    restrict action Delete
    Layout
        display as text
            header2 of "InvoiceInformation"
            single column
                Company
                PayablesInvoice.Invoice
                PayablesInvoice
                visible when (PayablesInvoiceDistribution entered)
                    PayablesInvoiceDistribution
            header2 of "TaxDetails"
            four column distributed
                column1
                    EnteredInvoiceAmount
                    TaxCode
                    LinkedToDistributions
                    ShortPaid
                    VATReverseCharge
                    TaxMethod
                column2
                    EnteredTaxCategory
                    ProductTaxCategory
                    PointOfTitleTransfer
                    TaxPointDate
                    TaxRate
                    TaxDetails.TaxTableOutput.AccrualCode
                column3
                    EnteredTaxableAmount
                    TaxSystemTaxableAmount
                    TaxDetails.TaxableAmount
                        label is "CalculatedTaxableAmount"
                    TotalInvoicedTaxableAmount
                    TotalAccruedTaxableAmount
                column4
                    EnteredTaxAmount
                    TaxSystemTaxAmount
                    TaxDetails.ReturnedTaxAmount
                    TotalInvoicedTaxAmount
                    TotalAccruedTaxAmount
            paragraph
                TaxResult
            paragraph
            header2 of "TaxRoundingVariance"
            paragraph
                TaxDetails.TaxTableOutput.Variance
                DerivedVariance
            header2 of "TaxTolerance"
            two column distributed
                column1
                    PayablesTaxTolerance
                column2
                    TaxToleranceOverridden
            header2 of "TaxDetails"
            paragraph
                TaxDetails
