UpdateMyContactInformation is an ActionForm
    action is UpdateMyContactInformation
    title is "UpdateMyContactInformation"
    Layout
        header2 of "GeneralInformation"
        single column
            NewContactTitle
                label is "Title"
            NewMainContact.GivenName
                label is "*_FirstName"
            NewMainContact.FamilyName
                label is "*_LastName"
        paragraph
            NewTelephoneNumber.InternationalPrefix
                label is "*_PhoneNumber"
            NewTelephoneNumber.SubscriberNumber
                no label
            NewTelephoneNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                italics
        paragraph
            NewMobilePhone
            text of "(InternationalPrefix,PhoneNumber)"
                italics
        paragraph
            NewFaxNumber
            text of "(InternationalPrefix,FaxNumber,Extension)"
                italics
        paragraph
            NewEmailAddress
                label is "*_EmailAddress"
            NewReceiveEmailNotification
                label is "ReceiveEmailNotification"
        header2 of "MailingAddress"
        single column
            visible when (SupplierGroup.DisplayTypeForRegistration)
                NewLocationAddress
                    form is PostalAddressMinimumWithType
            visible when (not SupplierGroup.DisplayTypeForRegistration)
                NewLocationAddress
                    form is PostalAddressMinimum
        single column
            blank line
            blank line
            text of "*__=_Required"
