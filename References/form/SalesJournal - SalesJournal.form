SalesJournal is an ActionForm
    action is SalesJournal
    Layout
        single column
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            text of "Or"
            paragraph
                CompanyGroup
                    label is "CompanyGroup"
                CompanyGroup.Description
                    no label
                    display as text
            paragraph
                ProcessLevel
                    select is ProcessLevels
                ProcessLevel.Name
                    no label
                    display as text
            paragraph
                Customer
                    select is GroupSearchName
                Customer.Name
                    no label
                    display as text
        two column distributed
            column1
                FrGlDate
                    label is "FromPostingDate"
            column2
                ToGlDate
                    label is "ToPostingDate"
        single column
            text of "Or"
        two column distributed
            column1
                paragraph
                    FromAddSubtract
                        label is "FromDateAdjustment"
                    FromDays
                        label is "Days"
            column2
                paragraph
                    ToAddSubtract
                        label is "ToDateAdjustment"
                    ToDays
                        label is "Days"
        paragraph
            CurrencyCode
            CurrencyCode.Description
                no label
                display as text
        paragraph
            ArCode
                label is "AccountsReceivableCode"
                select is ARCodes
            ArCode.Description
                no label
                display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                SalesJournalReport_RDG
            column2 of 25%
                SalesJournalReport_XPT
