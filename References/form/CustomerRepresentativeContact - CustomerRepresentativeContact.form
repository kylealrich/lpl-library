CustomerRepresentativeContact is a Form
    title is "CustomerContactInformation"
    disable field options
    Layout
        visible when (not CustomerRepresentative.BillingRecvExtEntityEnabled)
            header2 of "EnterLoginInformation"
            single column
                LoginName
                    label is "*_UserName"
                Password
                    label is "*_Password"
                ConfirmPassword
                    label is "*_ConfirmPassword"
        header2 of "EnterContactInformation"
        single column
            MainContact.GivenName
                label is "*_FirstName"
            MainContact.FamilyName
                label is "*_LastName"
        paragraph
            TelephoneNumber.InternationalPrefix
                label is "*_PhoneNumber"
            TelephoneNumber.SubscriberNumber
                no label
            TelephoneNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                italics
        paragraph
            EmailAddress
                label is "*_EmailAddress"
            ReceiveEmailNotification
        single column
            blank line
            text of "*__=_Required"
