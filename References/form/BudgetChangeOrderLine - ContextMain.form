ContextMain is a Form
    Layout
        four column distributed
            Scenario.ScenarioDescription
                label is "Scenario"
                display as text
            BudgetChangeOrder.BudgetChangeOrderDescription
                label is "ChangeRequest"
                display as text
            visible when (Released)
                DerivedChildScenario
                    display as text
            BudgetChangeOrder.Currency
                display as text
            paragraph
                text of "Released:"
                Released
                    no label
                    display as tag
                        color of green when (Released)
                        color of yellow when (not Released)
