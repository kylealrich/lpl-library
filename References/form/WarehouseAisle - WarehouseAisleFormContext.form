WarehouseAisleFormContext is a Form
    Layout
        visible when (not RecordExists)
            paragraph
                Company
                    label is "Company"
                Company.Name
                    no label
                    display as text
            paragraph
                InventoryLocation
                InventoryLocation.Name
                    no label
                    display as text
            paragraph
                WarehouseZone
                    label is "Zone"
                WarehouseZone.Description
                    no label
                    display as text
        visible when (RecordExists)
            paragraph
                Company.DerivedCompanyDisplay
                    label is "Company"
                    display as text
            paragraph
                InventoryLocation.DerivedInventoryLocationIDName
                    no label
                    display as text
            paragraph
                WarehouseZone.WarehouseZoneAndDescription
                    label is "Zone"
                    display as text
