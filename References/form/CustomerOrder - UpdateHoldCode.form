UpdateHoldCode is an ActionForm
    action is UpdateHoldCode
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            CustomerOrder
                label is "Order"
                display as text
        paragraph
            Customer
                display as text
            Customer.Name
                no label
                display as text
        paragraph
            ExpectedShipDate
                display as text
        paragraph
            OrderTotal
                display as text
        paragraph
            PrmHoldCode
                label is "HoldCode"
        paragraph
            PrmHoldCodeApprove
                label is "HoldCodeApprove"
        paragraph
            button of "Remove_Hold_Code" with icon.cancel
                label is "Remove"
                when button pressed
                    PrmHoldCode =  blank
