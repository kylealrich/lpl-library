MAttachmentForm is a Form
    title is "AttachmentForm"
    restrict action Create
    restrict action Delete
    Actions
        action is refresh
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
    Layout
        two column distributed
            BillingInvoiceComments
                display as text
            BillingInvoiceCommentAttachment
                label is "AttachmentNumber"
                display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        single column
            Comment
