ResourceIssueForm is a Form
    title is "IssueDetails"
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        CreatedBy.FirstAndLastName
                            label is "CreatedBy"
                            show up to 15 characters
                        DateCreated
                column2
                    paragraph
                        UpdatedBy.FirstAndLastName
                            label is "UpdatedBy"
                            show up to 15 characters
                        DateUpdated
                            label is "DateUpdated"
                column3
                    paragraph
                        ResolvedBy.FirstAndLastName
                            label is "ResolvedBy"
                        DateResolved
                            label is "DateResolved"
            text of "_"
            single column
                Summary
                Description
                Status
                    label is "IssueStatus"
