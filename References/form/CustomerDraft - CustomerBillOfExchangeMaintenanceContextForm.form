CustomerBillOfExchangeMaintenanceContextForm is a Form
    title is "CustomerBillOfExchangeMaintenance"
    Layout
        two column distributed
            column1
                display as text
                    paragraph
                        RepresentativeText
                        Company.Currency
                            no label
                    paragraph
                        CustomerRepresentativeText
                        CustomerDraft.DraftSource
                            label is "Source"
                    paragraph
                        CustomerDraft
                            compact format
                            select is CustomerDraftList
                    paragraph
                        Status
                        BankTransactionCode
                            label is "PaymentCode"
                        TransactionAmount
                            label is "TransactionAmount"
                        OriginalCurrency
                            no label
            column2
                paragraph
                    BankEntity
                        label is "CustomerBank"
                    BankEntity.BankName
                        no label
                        display as text
                paragraph
                    BankAccountNumber
                        label is "CustomerAccount"
                paragraph
                    DraftDate
                        label is "BOEDate"
                    MaturityDate
                        label is "DueDate"
                paragraph
                    CommentCode
                        label is "MessageCode"
                    PayerReference
                        label is "PayersReference"
