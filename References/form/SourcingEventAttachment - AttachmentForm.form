AttachmentForm is a Form
    is primary
    title is "SourcingEventAttachment"
    Actions
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is save and close
    Layout
        two column
            SourcingEvent.RepresentativeText
                display as text
            SeqNumber
                label is "AttachmentNumber"
                display as text
        single column
            Name
            Description
                use text area of 5 lines
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        two column
            visible when (EligibleForCM)
                CMAttachment
                    label is "SendAttachmentToContractManagement"
            SupplierCanView
