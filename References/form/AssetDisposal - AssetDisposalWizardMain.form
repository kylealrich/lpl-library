AssetDisposalWizardMain is a Form
    title is "DisposalDetail"
    Layout
        two column
            paragraph
                Asset
                    display as text
                AssetRel.Description
                    no label
                    display as text
            paragraph
                AssetRel.DerivedStatus
                    label is "AssetStatus"
                    display as text
                DisposalStatus
                    label is "DisposalStatus"
                    display as text
                Asset.Currency
                    label is "___AssetCurrency"
                    display as text
        visible when (AssetRel.LeasedAsset)
            paragraph
                AssetRel.AssetLease.LeaseCompany
                    label is "LeaseCompany"
                AssetRel.AssetLease.LeaseCompany.Name
                    no label
                    display as text
            paragraph
                AssetRel.AssetLease.Lease
                AssetRel.AssetLease.Lease.Description
                    no label
                    display as text
        three column independent
            AssetRel.TagNumber
                label is "TagNumber"
                    right of field
                display as text
            QuickDisposal
                label is "QuickDisposal"
                    right of field
            Voluntary
                label is "Voluntary"
                    right of field
        two column
            DisposalDate
            PostingDate
                label is "PostingDate"
        two column
            DisposalMethod
                label is "Method"
            FullOrPartial
        two column
            visible when (FullOrPartial.Partial)
                DisposalQuantity
            visible when (not FullOrPartial.Partial)
                DisposalQuantity
                    display as text
            DisposalProperty
                label is "Property"
        paragraph
            AssetDisposalCode
            AssetDisposalCode.Description
                no label
        blank line
        two column
            column1
                text of "Currency"
                    bold
                ProceedsCurrency
                    label is "Proceeds"
            column2
                text of "Amount"
                    bold
                Proceeds
                    no label
        two column
            column1
                CostOfSaleCurrency
                    label is "Expense"
            column2
                CostOfSale
                    no label
