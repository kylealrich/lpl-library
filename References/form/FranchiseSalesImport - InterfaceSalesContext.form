InterfaceSalesContext is a Form
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        Company
                    visible when (RecordExists)
                        Company.BillingCompany.RepresentativeText
                            display as text
                paragraph
                    visible when (not RecordExists)
                        Customer
                            select is CustomerSelectList
                    visible when (RecordExists)
                        FranchiseContract.DerivedCustomer
                            display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        FranchiseContract
                            label is "Contract"
                    visible when (RecordExists)
                        FranchiseContract
                            label is "Contract"
                            display as text
                paragraph
                    visible when (not RecordExists)
                        CustomerShipTo
                            label is "ShipTo"
                    visible when (RecordExists)
                        FranchiseContract.DerivedShipTo
                            display as text
            column3
                paragraph
                    visible when (not RecordExists)
                        paragraph
                            TransSelectableSalesType
                                label is "SalesType"
                    visible when (RecordExists)
                        paragraph
                            FranchiseSalesImport.SalesType
                                label is "SalesType"
                                display as text
                paragraph
                    visible when (not RecordExists)
                        FranchiseSalesImport.Date
                            label is "Date"
                        FranchiseSalesImport.AdjustmentNumber
                            label is "Adjustment"
                    visible when (RecordExists)
                        FranchiseSalesImport.Date
                            label is "Date"
                            display as text
                        FranchiseSalesImport.AdjustmentNumber
                            label is "Adjustment"
                            display as text
