CreateInvoiceFromInvoice is an ActionForm
    action is Unreleased.CreateInvoiceFromInvoice
        on completion navigate to ViewInvoice
    title is "CreateUsingCopyFromInvoice"
    Layout
        paragraph
            BillingCompany
                label is "Company"
        visible when (BillingCompany.ManualInvoiceNumbering)
            paragraph
                PrmGlobalInvoiceNumber
        paragraph
            PrmBillingInvoice
                label is "FromInvoice"
                compact format
                select is InvoicesByInvoiceNumber
            PrmAutoApply
                label is "AutoApply"
        paragraph
            PrmBillingInvoiceType
                label is "InvoiceType"
            PrmBillingInvoiceType.Description
                no label
                display as text
        paragraph
            PrmBatchNumber
                label is "Batch"
        paragraph
            PrmOverride
                label is "Override"
        header2 of "OverrideValues"
        visible when (PrmOverride)
            paragraph
                PrmInvoiceDate
                    label is "InvoiceDate"
            paragraph
                Customer
                    label is "Customer"
                    select is CustomerContextCompanySelectList
                Customer.Name
                    no label
                    display as text
            paragraph
                PrmCustomerShipTo
                    label is "ShipTo"
                PrmCustomerShipTo.Name
                    no label
                    display as text
            paragraph
                PrmBillingProcessLevel
                    label is "ProcessLevel"
                PrmBillingProcessLevel.Name
                    no label
                    display as text
            paragraph
                PrmReasonCode
                    label is "ReasonCode"
                PrmReasonCode.Description
                    no label
                    display as text
        visible when (not PrmOverride)
            paragraph
                PrmInvoiceDate
                    label is "InvoiceDate"
                    display as text
            paragraph
                Customer
                    label is "Customer"
                    display as text
                Customer.Name
                    no label
                    display as text
            paragraph
                PrmCustomerShipTo
                    label is "ShipTo"
                    display as text
                PrmCustomerShipTo.Name
                    no label
                    display as text
            paragraph
                PrmBillingProcessLevel
                    label is "ProcessLevel"
                    display as text
                PrmBillingProcessLevel.Name
                    no label
                    display as text
            paragraph
                PrmBillingInvoiceType
                    label is "InvoiceType"
                    display as text
                PrmBillingInvoiceType.Description
                    no label
                    display as text
            paragraph
                PrmReasonCode
                    label is "ReasonCode"
                    display as text
                PrmReasonCode.Description
                    no label
                    display as text
