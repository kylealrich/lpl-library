BankStatementDistributions is a CompositeForm
    title is "BankStatementDistributions"
    context form is BankStatementDistributionsContextForm
        background is theme color
    Actions
        action is ReleaseDistributions
            label is "ReleaseDistributions"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is refresh
            label is "_"
    UnpostedStatementLineDistributions is a Panel
        visible when (HasUnpostedStatementLineDistributions)
        list is UnpostedStatementLineDistributionsRel.StatementLineDistributionByLineList
    UnpostedReconciliationVarianceDistributions is a Panel
        visible when (HasUnpostedNonCashLedgerDistributions)
        list is UnpostedNonCashLedgerDistributionsRel.StatementNonCashLedgerDistributionsList
    AllStatementLineDistributions is a Panel
        visible when (HasStatementLineDistributions)
        list is BankStatementLineDistribution set.StatementLineDistributionByLineList
    AllReconciliationVarianceDistributions is a Panel
        visible when (HasNonCashLedgerDistributions)
        list is NonCashLedgerDistribution set.StatementNonCashLedgerDistributionsList
