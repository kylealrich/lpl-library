ContractContextShortNegotiation is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        display as text
            paragraph
                ContractGroup
                Contract
                Name
                    no label
                Status
                WorkingContractID
            paragraph
                Supplier
                Supplier.SupplierName
                    no label
                SupplierSourceId
                    label is "SupplierContact"
                SupplierSourceId.MainContact.FirstAndLastName
                    no label
        paragraph
            button of "ApproveTerms"
                valid when (BuyerApproveTermsValid)
                action is Negotiation.NeedsInternalApproval.ApproveTermChanges
            button of "SubmitTermChanges"
                valid when (BuyerSubmitTermChangesValid)
                action is Negotiation.NeedsInternalApproval.SubmitTermChanges
            button of "AddArticle"
                valid when (BuyerAddArticleValid)
                action is AddArticle
            button of "AddArticleFromLibrary"
                valid when (BuyerAddArticleFromLibraryValid)
                action is AddArticleFromLibrary
            button of "ViewCurrentTerms"
                link is ContractArticlesAndTermsPrint
