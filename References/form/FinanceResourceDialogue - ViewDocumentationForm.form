ViewDocumentationForm is a Form
    title is "DocumentDetails"
    Layout
        header3 of "<DialogueTitle>"
        single column
            Author.DialogueResource.PreferredSimplePresentationName
                label is "Author"
            paragraph
                Dialogue
                    label is "Notes"
                    use text area of 10 lines
        button of "<DialogueAttachment.Title>"
            visible when (DialogueAttachment entered)
            view DialogueAttachment.File
            display as link
        button of "<DialogueLink>"
            visible when (DialogueLink entered)
            link is external "<DialogueLink>"
            display as link
