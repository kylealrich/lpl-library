CreateBusinessClassForm is an ActionForm
    action is CreateBusinessClass
        on completion navigate to ConfigConsoleNav
    title is "AddBusinessClass"
    Layout
        single column
            BusinessClassNameParam
                when value changed
                    KeyFieldNameParam =  BusinessClassNameParam
            ContextParam
        single column
            header2 of "Key_Field"
            KeyFieldNameParam
            paragraph
                ExtendedTypeParam
                valid when (ExtendedTypeParam.HasSize)
                    FieldSizeParam
                valid when (ExtendedTypeParam.HasDecimal)
                    DecimalSizeParam
        single column
            header2 of "Implementations"
            ParentHierarchyParam
            UserDefinedStatesParam
