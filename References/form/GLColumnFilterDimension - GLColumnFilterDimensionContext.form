GLColumnFilterDimensionContext is a Form
    title is "G\\LColumn"
    Layout
        single column
            FinanceEnterpriseGroup
            GLColumn.GLColumnType
                display only
            GLColumn.ColumnName
                display only
            DimensionLabel
                display only
            Dimension
        four column
            column1
                button of "AddDimensionFilter"
                    valid when (HasDimension)
                    action is AddDimensionFilter
            column2
                visible when (HasGeneralLedgerChartAccountParam)
                    button of "AddChartSectionFilter"
                        action is AddChartSectionFilter
            column3
                visible when (HasGeneralLedgerChartAccountParam)
                    button of "AddAccountTypeFilter"
                        action is AddAccountTypeFilter
            column4
                visible when (HasScenarioParam)
                    button of "AddBudgetParameter"
                        action is CreateScenarioBudgetParameter
