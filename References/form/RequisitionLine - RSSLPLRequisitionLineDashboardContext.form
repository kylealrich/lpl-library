RSSLPLRequisitionLineDashboardContext is a Form
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        visible when (RSSLPLDisplayCompany)
                            Company
                        Requisition
                        RequisitionLine
                    paragraph
                        visible when (IsInventoryOrNonstock)
                            visible when (OriginalItemExists)
                                Item
                                Item.Description
                                    label is "Description"
                                OriginalItem
                                    label is "OriginalItem"
                                        italics
                                OriginalItemRel.Description
                                    label is "OriginalItemDescription"
                                        italics
                            visible when (not OriginalItemExists)
                                Item
                                Item.Description
                                    label is "Description"
                    paragraph
                        visible when (not IsInventoryOrNonstock)
                            Item
                            Description
                        VendorItem
                        VendorItem.VendorItemDescription
                            label is "Description"
                        ItemType
                        visible when (ItemType.Service)
                            ServiceCode
                    paragraph
                        visible when (HasSpecialHandlingCode)
                            DerivedSpecialHandlingCode
                                label is "SpecialHandlingCode"
                    paragraph
                        visible when (HasSpecialHandlingCode)
                            DerivedSpecialHandlingInstructions
                                label is "SpecialHandlingCodeInstructions"
                                use text area of 7 lines
                    paragraph
                        visible when (HasSpecialHandlingCode)
                            DerivedTimeSensitive
                                label is "TimeSensitive"
                    paragraph
                        visible when (SpecialHandlingCode.TimeSensitive)
                            DerivedHandlingTimeInMinutes
                                label is "HandlingTimeInMinutes"
                    visible when (LatexItem)
                        LatexLabel
                            no label
                            display as tag
                                color of orange
                column2
                    paragraph
                        visible when (RSSLPLDisplayFromCompany)
                            FromCompanyLocationBin.FromCompany
                                label is "DeliverFromCompany"
                            FromCompanyLocationBin.FromCompany.Name
                                no label
                    paragraph
                        visible when (RSSLPLDisplayFromLocation)
                            FromCompanyLocationBin.FromLocation
                                label is "DeliverFromLocation"
                            FromCompanyLocationBin.FromLocation.Name
                                no label
                        RequestedDeliveryDate
                    paragraph
                        visible when (Requisition.Requester.DisplayCost)
                            UnitCost
                                label is "UnitCost"
                            ApprovalValue
                                label is "Amount"
                    visible when (RecallProductItemForItemRelExists)
                        RecallLabel
                            no label
                            display as tag
                                color of red
                column3
                    Requisition.DerivedStatusMessage
                        label is "RequisitionStatus"
                    DerivedStatusMessage
                        label is "LineStatus"
                    DerivedTransactionTypeMessage
                        label is "TransactionType"
                    visible when (Item.Recipe)
                        RecipeItemLabel
                            no label
                            display as tag
                                color of blue
