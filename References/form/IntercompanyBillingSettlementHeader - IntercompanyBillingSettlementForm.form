IntercompanyBillingSettlementForm is a CompositeForm
    is primary
    title is "<IntercompanyBillingSettlmentFormTitle>"
    context form is IntercompanyBillingSettlementContextForm
        background is theme color
    Actions
        action is Release
            action icon is hidden
            hide when invalid
        action is Create
            action icon is create
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is Delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is IntercompanyBillingSettlementMainForm
    Details is a Panel
        list is IntercompanyBillingSettlementDetail set.primary
            helper list is UnsettledBillingDocumentRel.BillingDocumentSettlementHelperList
                action is AddToSettlement
                    invoked.PrmSettlement = IntercompanyBillingSettlementHeader
                valid when (Status.Unreleased)
    BankFees is a MultiListPanel
        list is IntercompanyBillingSettlementFee set.PayableSettlementFeeList
            show 3 lines
        list is IntercompanyBillingSettlementFee set.ReceivableSettlementFeeList
            show 3 lines
