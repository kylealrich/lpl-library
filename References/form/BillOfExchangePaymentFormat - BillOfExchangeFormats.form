BillOfExchangeFormats is a Form
    is primary
    Layout
        two column distributed
            column1
                paragraph
                    Company
                        select is Company
                    Company.Name
                        no label
                        display as text
                    Company.Currency
                        label is "Currency"
                        display as text
                paragraph
                    PaymentFormat
                        label is "Format"
            column2
                paragraph
                    BankTransactionCode
                        label is "TransactionCode"
                        select is BOEPayments
                    BankTransactionCode.Description
                        no label
                        display as text
                ElectronicPaymentIDNumber
        blank line
        header2 of "DocumentOptions"
        blank line
        blank line
        two column distributed
            column1
                RemittanceOption
                    label is "Remittance"
                NumberOfRemittanceLines
                    label is "AttachedDetailLines"
            column2
                NumberOfOverflowRemittanceLines
                    label is "OverflowDetailLines"
                LanguageTextOption
                    label is "Language"
