InterfacePayment1Context is a Form
    title is "ReceivablePaymentImport"
    Layout
        three column
            column1
                RunGroup
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
                BatchNumber
                    label is "PaymentBatch"
            column2
                visible when (IsHeaderRecord)
                    paragraph
                        ReceivableProcessLevel
                            label is "ProcessLevel"
                            select is ProcessLevels
                        ReceivableProcessLevel.Name
                            no label
                            display as text
                    ReceivableLockBox
                        label is "Lockbox"
                        select is ReceivableLockBoxRel.ReceivableLockBoxList
                    paragraph
                        CashCode
                            select is CashCodeForCompanyList
                        CashCode.Description
                            no label
                            display as text
                visible when (not IsHeaderRecord)
                    paragraph
                        HeaderImportRel.ReceivableProcessLevel
                            label is "ProcessLevel"
                            display as text
                        HeaderImportRel.ReceivableProcessLevel.Name
                            no label
                            display as text
                    HeaderImportRel.ReceivableLockBox
                        label is "Lockbox"
                        display as text
                    paragraph
                        HeaderImportRel.CashCode
                            display as text
                        HeaderImportRel.CashCode.Description
                            no label
                            display as text
            column3
                visible when (IsHeaderRecord)
                    visible when (RecordInError)
                        paragraph
                            ErrorMessage
                                display as text
                    DepositDate
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                    paragraph
                        Currency
                            label is "CurrencyCode"
                        CurrencyRate
                            label is "ExchangeRate"
                visible when (not IsHeaderRecord)
                    visible when (RecordInError)
                        paragraph
                            ErrorMessage
                                display as text
                    paragraph
                        HeaderImportRel.DepositDate
                            display as text
                        HeaderImportRel.Currency
                            label is "CurrencyCode"
                            display as text
                        HeaderImportRel.CurrencyRate
                            label is "ExchangeRate"
                            display as text
                    HeaderImportRel.GeneralLedgerDate
                        label is "GlobalLedgerDate"
                        display as text
        blank line
        visible when (IsPaymentRecord)
            header2 of "Payment"
            two column
                column1
                    PaymentSeq
                        label is "PaymentSequence"
                    TransNbr
                        label is "Payment"
                    TranAmt
                        label is "PaymentAmount"
                column2
                    paragraph
                        BankEntity
                        BankAccountNumber
                            label is "BankAccount"
                        EDINumber
                            label is "E\\D\\I"
                    paragraph
                        RemitType
                            label is "AssignmentType"
                        TransRemNbr
                            label is "AssignmentNumber"
                    paragraph
                        Customer
                            select is CustomerContextCompanyCustomerSelectList
                        InterfacedCustomer
                        Project
        blank line
        visible when (IsRemittanceRecord)
            header2 of "Remittance"
            single column
                RemittanceSequence
                RemitType
                    label is "RemittanceType"
                TransRemNbr
                    label is "Remittance"
                AppldAmt
                    label is "AmountToApply"
