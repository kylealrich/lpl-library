ItemContext is a Form
    Layout
        visible when (RecordExists)
            four column distributed
                column1
                    visible when (UseLinkedImage)
                        ImageURL
                            display as image
                    visible when (not UseLinkedImage)
                        Picture.File
                            display as image
                                missing image is random background
                                    foreground text is "<ItemDescriptionAbbreviation>"
                column2
                    display as text
                        paragraph
                            Item
                            Description
                    ItemGroup.ItemGroupDescription
                        label is "ItemGroup"
                        display as text
                column3
                    Description2
                        display as text
                    StockUOM.UnitOfMeasureAndDescription
                        label is "StockUOM"
                        display as text
                column4
                    paragraph
                        NotAvailableDisplay
                            no label
                            display as tag
                                color of gray when (Discontinued)
                                color of green when (Active)
                                color of red when (not Active)
                                color of red when (NotAvailableForUse)
                    paragraph
                        visible when (Recipe)
                            IsARecipeMessage
                                no label
                                display as tag
                                    color of blue when (Recipe)
                        visible when (Ingredient)
                            IngredientItemMessage
                                no label
                                display as tag
                                    color of blue when (Ingredient)
                    paragraph
                        visible when (HasContract)
                            OnContractDisplay
                                no label
                                display as tag
                                    color of yellow when (HasContract)
                        visible when (RecallNoticesExist)
                            RecallNoticesDisplay
                                no label
                                display as tag
                                    color of red when (RecallNoticesExist)
                        visible when (IsTrackedInAlternateUOM)
                            TrackedInAlternateUOMDisplay
                                no label
                                display as tag
                                    color of yellow when (IsTrackedInAlternateUOM)
