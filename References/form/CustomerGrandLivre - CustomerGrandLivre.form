CustomerGrandLivre is an ActionForm
    action is CustomerGrandLivre
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            BegDate
                label is "BeginDate"
            EndDate
                label is "EndDate"
        blank line
        five column distributed
            ArCode.ArCode[1]
                label is "CodeG\\L"
            ArCode.ArCode[2]
                no label
            ArCode.ArCode[3]
                no label
            ArCode.ArCode[4]
                no label
            ArCode.ArCode[5]
                no label
        blank line
        paragraph
            FrCustomer
                label is "FromCustomer"
                select is GroupSearchName
            FrCustomer.Name
                no label
                display as text
            ToCustomer
                label is "ToCustomer"
                select is GroupSearchName
            ToCustomer.Name
                no label
                display as text
        single column
            PagebreakOption
                label is "PageBreak"
        single column
            PrintClosedOption
                label is "PrintAppliedDetails"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CustomerGrandLivreReport_RDG
            column2 of 25%
                CustomerGrandLivreReport_XPT
