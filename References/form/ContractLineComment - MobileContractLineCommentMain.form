MobileContractLineCommentMain is a Form
    title is "Line<ContractLine>Comment"
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            single column
                ContractLine.ItemDescription
        single column
            visible when (LineCommentTypeEntered)
                ContractCommentType
                    label is "CommentType"
                    display as text
            CommentUsedFor
            CommentTitle
                label is "Title"
            Description
                use text area of 8 lines
            visible when (EligibleForSourcing)
                SSComment
                    label is "SendCommentToSourcing"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        single column
            EmailAttachment
                label is "IncludeAttachmentInEmail"
            visible when (LineCommentExists)
                SupplierCanView
