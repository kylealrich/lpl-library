ReceiverLineSummary is a Form
    title is "ReceivingLineDetail"
    Layout
        two column distributed
            paragraph
                CancelBackorder
                    label is "CancelBackorder"
                InspectionRequired
            paragraph
                text of "Manufacturer_Information"
                    header4
                    bold
        display as text
            two column distributed
                paragraph
                    Item
                    PurchaseOrderLine.Description
                        label is "ItemDetail"
                    ItemType
                paragraph
                    PurchaseOrderLine.Manufacturer.ManufacturerCode
                        label is "ManufacturerCode"
                    PurchaseOrderLine.Manufacturer.ManufacturerDivision
                        label is "ManufacturerDivision"
                    PurchaseOrderLine.ManufacturerNumber
                        label is "ManufacturerNumber"
                    visible when (IsHSNSACCodeEnabled)
                        paragraph
                            HSNSACCode
                            HSNSACCode.Description
                                no label
        display as text
            two column distributed
                paragraph
                    visible when (MultipleBins)
                        MultipleBins
                    visible when (not MultipleBins)
                        Bin
                    Bin.BinType
                        label is "Type"
                    Bin.StorageCode
                        label is "Storage"
                paragraph
                    VendorReturn
                    VendorReturnLine
                        label is "Type"
                    VendorReturnLine.ReturnQuantity
        visible when (PurchaseOrderLine.HasSpecialHandlingCode)
            header2 of "SpecialHandling"
            paragraph
                DerivedSpecialHandlingCode
                    label is "SpecialHandlingCode"
                DerivedSpecialHandlingDescription
                    no label
                    display as text
            two column distributed
                visible when (PurchaseOrderLine.HasHandlingInstructionsToDisplay)
                    DerivedSpecialHandlingInstructions
                        display as text
                        use text area of 5 lines
            DerivedTimeSensitive
                label is "TimeSensitive"
                display as text
            visible when (PurchaseOrderLine.SpecialHandlingCode.TimeSensitive)
                DerivedHandlingTimeInMinutes
                    label is "HandlingTimeInMinutes"
        header2 of "MSDS"
        two column distributed
            column1
                MSDSRequired
                    label is "M\\S\\D\\S_\\Received"
                MSDSVersion
                    label is "Version"
            column2
                MSDSDocument
                    label is "Document"
        visible when (ItemHazardCodeEntered)
            header3 of "Hazard"
            two column distributed
                column1
                    ItemHazardCode
                        no label
                        display as text
                column2
                    ItemHazardDescription
                        no label
                        display as text
