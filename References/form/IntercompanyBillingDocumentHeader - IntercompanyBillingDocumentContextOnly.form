IntercompanyBillingDocumentContextOnly is a Form
    title is "IntercompanyBillingDocument"
    restrict action AddToSettlement
    Layout
        display as text
            four column distributed
                IntercompanyBillingDocumentHeader
                    label is "Document"
                paragraph
                    Status
                    visible when (Status.PendingApproval)
                        DisplayByCurrentApproverDesc
                            no label
                OriginatedFrom
                paragraph
                    DerivedCreateDate
                        label is "Created"
                    DerivedCreateActorName
                        label is "By"
            four column distributed
                ExtendedAmountTotal
                    label is "SubTotal"
                TaxTotal
                    label is "Tax"
                visible when (HasWithholdingAmountLines)
                    paragraph
                        WithholdingTotal
                            label is "Withholding"
                        SecondaryWithholdingTotal
                            label is "SecondaryWithholding"
                paragraph
                    NetDueAmount
                        label is "TotalDue"
                    DocumentCurrency.Currency
                        no label
            four column distributed
                visible when (Status.Released)
                    paragraph
                        SettledAmount
                        DocumentCurrency.Currency
                            no label
                visible when (ReceivableCurrencyNotDocumentCurrency)
                    paragraph
                        DerivedNetDueInReceivableCurrency
                            label is "ReceivableBase"
                        ReceivableEntity.Company.Currency
                            no label
                visible when (PayableCurrencyNotDocumentCurrency)
                    paragraph
                        DerivedNetDueInPayableCurrency
                            label is "PayableBase"
                        PayableEntity.Company.GeneralLedgerCompany.Currency
                            no label
            four column distributed
                visible when (BackgroundProcessingInProcess)
                    BackgroundProcessing
                        label is "BackgroundProcessing...RefreshToViewProgress"
                        display as tag
                            color of red
                visible when (BackgroundProcessingFailure)
                    BackgroundProcessing
                        label is "BackgroundProcessingFinishedWithErrors"
                        display as tag
                            color of red
                    ErrorMessage
