BackordersContext is a Form
    restrict action CreateCustomerOrderReturnLine
    Layout
        two column
            column1 of 50%
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
                paragraph
                    CustomerOrder
                        display as text
                    CustomerOrderLine
                        label is "Line"
                        display as text
                blank line
                ItemLocation.StockOnHandQuantity
                    label is "CurrentStockOnHandQuantity"
                    display as text
            column2 of 50%
                paragraph
                    CustomerOrder.InventoryLocation
                        label is "Location"
                        display as text
                    CustomerOrder.InventoryLocation.Name
                        no label
                        display as text
                paragraph
                    Item
                        display as text
                    ItemDescription
                        no label
                        display as text
                blank line
                ItemLocation.AvailableQuantity
                    label is "CurrentAvailableQuantity"
                    display as text
        three column
            column1 of 25%
                OrderQuantity
            column2 of 25%
                DisplayAllocatedQuantity
                    label is "AllocatedQuantity"
                    display as text
            column3 of 25%
                DisplayBackorderedQuantity
                    label is "BackorderQuantity"
                    display as text
        blank line
