CurrentActivityBalanceContextForm is a Form
    title is "CurrentActivityBalance"
    Layout
        four column table
            column1
                display as text
                    visible when (HasParent)
                        paragraph
                            ParentStudentActivityAccount
                                label is "ParentAccount"
                                select is StudentActivityGroupSelectList
                    paragraph
                        StudentActivityAccount
                            label is "Activity"
                    paragraph
                        ActivityLevel
            column2
                paragraph
                    visible when (HasParent)
                        ParentStudentActivityAccount.Description
                            no label
                            display as text
                paragraph
                    Description
                        no label
                        display as text
                paragraph
                    StudentActivityType
                        label is "ActivityType"
                        display as text
            column3
                display as text
                    paragraph
                        DerivedCurrentReceipts
                            label is "Receipts"
                            indent
                    paragraph
                        DerivedCurrentDisbursements
                            label is "Disbursements"
                            indent
                    paragraph
                        DerivedCurrentTransfers
                            label is "Transfers"
                            indent
            column4
                paragraph
                    DerivedLatestClosePeriodEndingBalance
                        label is "LastPeriodEndingBalance"
                        indent
                        display as text
                paragraph
                    DerivedCurrentBalance
                        label is "CurrentBalance"
                        indent
                        display as text
                    visible when (HasTransactionDetails)
                        button of "CurrentTransactionDetails"
                            link is CurrentTransactionDetails
