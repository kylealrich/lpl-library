MobileCustomerOrder is a CompositeForm
    title is "CustomerOrder"
    context form is MobileCustomerOrderContext
    show panel control on left
    restrict action Unreleased.Create
    restrict action Unreleased.CreateByCopy
    restrict action Unreleased.Delete
    Actions
        action is save
            label is "_"
        action is Unreleased.Delete
            hide when invalid
    Main is a Panel
        form is Main
    Charges is a Panel
        list is AddOnChargesForCustomerOrderRel.MobileOrderAddOnCharges
    TaxInquiry is a Panel
        form is OrderTaxInquiry
    Lines is a Panel
        visible when (IsUnreleased)
        list is CustomerOrderLinesRel.MobileLines
    CancelLine is a Panel
        title is "Lines"
        visible when (IsReleased)
        list is CustomerOrderLinesRel.MobileCustomerOrderLines
    CreditStatus is a Panel
        form is MobileCreditStatus
    Attachments is a Panel
        list is CustomerOrderAttachment set.MobileAttachments
    ProformaDetails is a Panel
        visible when (HasProformaInvoice)
        list is ProformaInvoiceRel.COProformaInvoiceList
