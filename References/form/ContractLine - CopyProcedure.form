CopyProcedure is an ActionForm
    action is CopyProcedure
    Layout
        paragraph
            ContractGroup
                display as text
            Contract
                display as text
            ItemNumber
                label is "CurrentProcedure"
        paragraph
            NewProcedureItemNumber
            NewVendorItem
        single column
            NewCapitatedProcedure
            visible when (NewCapitatedProcedure.PrimaryAndRevision)
                NewPrimaryCost
                NewRevisionCost
                NewPrimaryDiscount
                NewRevisionDiscount
            visible when (not NewCapitatedProcedure.PrimaryAndRevision)
                visible when (NewCapitatedProcedure.PrimaryOnly)
                    NewPrimaryCost
                    NewPrimaryDiscount
                visible when (NewCapitatedProcedure.RevisionOnly)
                    NewRevisionCost
                    NewRevisionDiscount
            SetComponentGroupMaximumQuantityToZero
