DistributionRequirementsReport is an ActionForm
    action is DistributionRequirementsReport
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            Location
            Location.Name
                no label
                display as text
        paragraph
            ReportGrp
                label is "ReportGroup"
            ReportGrp.Name
                no label
                display as text
        paragraph
            Requester
            Requester.Name
                no label
                display as text
        paragraph
            BuyerCode
                label is "Buyer"
            BuyerCode.Employee.PresentationNameSnapshot
                no label
                display as text
        paragraph
            InvenMajcl
                label is "InventoryMajorClass"
            InvenMajcl.Description
                no label
                display as text
        single column
            UpdateYn
                label is "Update"
            ChkActivityFlg
                label is "CheckActivity"
            IclCalendar
                label is "Calendar"
            StartDate
                label is "CurrentBeginningDate"
            NbrOfPeriods
                label is "PlannedPeriods"
            FirmOrderCutoffDt
                label is "FirmOrderPeriodCutoff"
            PrintCutoffDt
                label is "PrintingPeriodCutoff"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                DistributionRequirementsReportReport_RDG
            column2 of 25%
                DistributionRequirementsReportReport_XPT
