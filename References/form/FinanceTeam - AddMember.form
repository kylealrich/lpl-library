AddMember is an ActionForm
    action is AddMember
    title is "AddMember"
    Layout
        header3 of "AddResourceTo<FinanceTeam>"
        single column
            LocalResource
                label is "Resource"
                select is FinanceResourceActiveSelect
        header3 of "<LocalResource.PreferredSimplePresentationName>AtAGlance"
        two column distributed
            column1
                LocalResource.ResourcePicture.File
                    no label
                    align as label
                    display as image up to 5 lines
                        missing image is random background
                            foreground text is "<FinanceResource.Employee.Name.Initials>"
            column2
                LocalResource.EmailAddress
                    no label
                    display as text
                LocalResource.EmploymentId
                    label is "EmploymentId"
                    display as text
                LocalResource.Department
                    label is "Department"
                    display as text
                LocalResource.FullWorkPhone
                    label is "WorkPhone"
                    display as text
