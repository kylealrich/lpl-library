CopyAssignment is an ActionForm
    action is CopyAssignment
    title is "CopyAssignment"
    Layout
        two column distributed
            column1
                NewProject
                    label is "<FinanceEnterpriseGroup.ProjectLabel>"
            column2
                NewProject.Description
                    label is "Description"
                    display as text
        two column distributed
            column1
                paragraph
                    NewProjectEmployee
                        label is "Employee"
                        select is ActiveProjectEmployeeList
                    NewProjectEmployee.Employee.Name.PreferredFirstAndLastName
                        no label
                        display as text
            column2
                paragraph
                    NewProjectEmployee.ProjectLaborSchedule
                        label is "LaborSchedule"
                        display as text
                    NewProjectEmployee.ProjectLaborSchedule.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    NewProjectRole
                        label is "ProjectRole"
                    NewProjectRole.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    NewProjectDateRange.BeginDate
                        label is "BeginDate"
                    NewProjectDateRange.EndDate
                        label is "EndDate"
        two column distributed
            column1
                NewCommittedEffort
                    label is "CommittedEffort"
            column2
                NewBillableRate
                    label is "BillableRate"
        single column
            NewFinanceCodeBlock
                label is "LaborDistributionFinanceStructure"
                compact format
            text of "DimensionsSetToBlank:"
                align as label
            NewFinanceCodeBlockSetBlanks
                no label
        three column
            column1
                NewBurdenCode
                    label is "BurdenCode"
            column2
                NewBurdenCode.Description
                    no label
                    display as text
            column3
                NewBurdenCode.Rate
                    label is "FringeBurden"
                    display as text
        single column
            NewBurdenCodeBlock
                label is "FringeBurdenFinanceStructure"
                compact format
            text of "DimensionsSetToBlank:"
                align as label
            NewBurdenCodeBlockSetBlanks
                no label
            NewFringeEncumbranceCodeBlock
                label is "FringeEncumbranceFinanceStructure"
                compact format
        single column
            CopyAssignmentSplits
                label is "CopyAssignmentSplits"
