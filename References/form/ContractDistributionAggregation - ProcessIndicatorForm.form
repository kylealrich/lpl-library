ProcessIndicatorForm is a Form
    title is "ProcessIndicator"
    Layout
        single column
            visible when (not ApprovalProcessorRel.DisplayApprovalInformationPanel)
                ApprovalProcessorRel.ProcessIndicatorNotFoundMessage
                    no label
                    display as text
            visible when (ApprovalProcessorRel.DisplayApprovalInformationPanel)
                ApprovalProcessorRel.first PfiWorkunitRel.PfiProcessIndicatorRel.Model
                    no label
                    display as text
        paragraph
            ApprovalProcessorRel.last ApprovalProcessorAudit set.Status
                display as tag
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Assigned)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Reassigned)
                    color of red when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Rejected)
                    color of green when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Approved)
                    color of red when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Disapproved)
                    color of green when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.AutoApproved)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.PendingApprover)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Restored)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.MatchReleased)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.SentForPayment)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Submitted)
                    color of red when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Cancelled)
                    color of green when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.ManuallyApproved)
                    color of red when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.ManuallyRejected)
                    color of green when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Released)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Matched)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Unmatched)
                    color of blue when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Status.Amended)
            visible when (ApprovalProcessorRel.last ApprovalProcessorAudit set.ActionReason entered)
                ApprovalProcessorRel.last ApprovalProcessorAudit set.ActionReason
                    label is "Reason"
            visible when (ApprovalProcessorRel.last ApprovalProcessorAudit set.Comment entered)
                ApprovalProcessorRel.last ApprovalProcessorAudit set.Comment
                    show up to 30 characters
