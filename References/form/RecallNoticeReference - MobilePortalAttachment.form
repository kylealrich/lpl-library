MobilePortalAttachment is a Form
    title is "Attachment"
    called out actions only
    Actions
        action is Create
            action icon is create
            label is "_"
        action is save
            action icon is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
    Layout
        single column
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
