PhoneCashLedgerTransactionContext is a Form
    title is "CashLedgerTransactionContext"
    Layout
        paragraph
            Company.OrigCompany
                display as text
                select is Company
            Company.OrigCompany.Name
                display as text
        paragraph
            BankTransactionCode
                label is "TransactionCode"
                display as text
            BankTransactionCode.Description
                display as text
        paragraph
            TransactionNumber
                show up to 10 characters
            Company.OrigCompany.Currency
                label is "Currency"
                display as text
        paragraph
            CashCode
                show up to 10 characters
            CashLedgerTransactionIdentifier
                display as text
        paragraph
            visible when (IsSourceCodeAP)
                IssuedBankAmount
                    label is "Amount"
            visible when (not IsSourceCodeAP)
                IssuedBankAmountUnsigned
                    label is "Amount"
            ReconciliationData.CurrencyAmount
                label is "ReconciledAmount"
                display as text
