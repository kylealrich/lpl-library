PhoneWorkItemContextForm is a Form
    title is "WorkItem"
    Layout
        header2 of "WorkItem"
        single column
            Description
                no label
                align as label
                display as text
                show up to 40 characters
        visible when (PhoneDisplayTypeIsContentOrFile)
            header2 of "Content"
            single column
                PhoneDisplayExec
                    no label
                    display as text
                    use text area of 20 lines
        header2 of "Dates"
        single column
            StartDate
                label is "Start"
                display as text
            DueDate
                label is "Due"
                display as text
        header2 of "WorkUnitInformation"
        single column
            PfiWorkunit
                display as text
            FilterValue
                display as text
        header2 of "Originator"
        single column
            PfiWorkunit.Actor
                no label
                align as label
            visible when (ActorEmailAddressEntered)
                button of "Email" with icon.frameworkEmailIconBlue
                    link is "mailto:<PfiWorkunit.Actor.ContactInfo.EmailAddress>"
                    align as label
