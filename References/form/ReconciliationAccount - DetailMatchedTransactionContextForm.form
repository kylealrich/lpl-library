DetailMatchedTransactionContextForm is a Form
    title is "DetailMatchedTransaction"
    Layout
        two column distributed
            column1
                visible when (LevelType.Group)
                    paragraph
                        ReconciliationGroup
                            display only
                        ReconciliationGroupMethod
                            display as text
                visible when (LevelType.NonAccount)
                    paragraph
                        NonAccountReconciliation
                            display only
                visible when (IsAccountWithinGroup)
                    paragraph
                        ParentReconciliationAccount.ReconciliationGroup
                            display only
                visible when (LevelType.Account)
                    paragraph
                        ReconciliationCodeBlock
                            form is ReconciliationCodeBlockDisplay
                        ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                            no label
                            display as text
                        Currency
                            no label
                            display as text
            visible when (CurrentReconMatchNumber entered)
                column2
                    CurrentMatchedAmount
                        display as text
