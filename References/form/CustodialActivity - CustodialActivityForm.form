CustodialActivityForm is a Form
    is primary
    title is "Activity"
    Layout
        single column
            CustodialPosting
                display only
            DocumentNumber
                display only
            visible when (IsReceivablePayment)
                button of "ViewDocumentDetails"
                    link is ViewReceivableDocument
                    display as link
            visible when (IsCashLedgerPayment)
                button of "ViewDocumentDetails"
                    link is ViewCashLedgerPmtDocument
                    display as link
            visible when (IsPayablesInvoice)
                button of "ViewPayablesInvoiceDetails"
                    link is ViewPayablesInvoiceDocument
                    display as link
            visible when (IsCashLedgerPayablesPayment)
                button of "ViewCashLedgerPayablesPaymentDetails"
                    link is ViewCashLedgerPayablesPaymentDocument
                    display as link
            visible when (IsCashLedgerTransaction)
                button of "ViewDocumentDetails"
                    link is ViewCashLedgerTransactionDocument
                    display as link
            visible when (IsGeneralLedgerTransaction)
                button of "ViewDocumentDetails"
                    link is ViewGeneralLedgerTransactionDocument
                    display as link
            ActivityDate
                display only
            ActivityType
                display only
            Description
                display only
            Amount
                display only
