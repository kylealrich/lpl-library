VendorImportContext is a Form
    Layout
        three column distributed
            column1
                RunGroup
                VendorImport.OldVendor
                    label is "OldVendor"
                VendorStatus
                    label is "Status"
                VendorMappingTableInterfaceRel.Vendor
                    label is "VendorMappingVendor"
                    display as text
            column2
                VendorGroup
                NewVendor
                RecordInError
                    display as text
                visible when (RecordInError)
                    text of "*Error:<ErrorMessage>"
                        bold
            column3
                VendorGroup.Description
                    label is "Description"
                    display as text
                visible when (not HasLocation)
                    VendorName
                        label is "Name"
                visible when (HasLocation)
                    VendorImport.VendorLocation
                        label is "VendorLocation"
                    VendorName
                        label is "Name"
