SummaryChartAccountForm is a Form
    title is "Chart<FinanceEnterpriseGroup.AccountLabel>_<ReportingChart>_<AccountDescription>"
    Layout
        three column distributed
            display as text
                column1
                    paragraph
                        FinanceEnterpriseGroup
                        FinanceEnterpriseGroup.EnterpriseGroup.Description
                            no label
                    visible when (GeneralLedgerChartAccount entered)
                        GeneralLedgerChartAccount
                            label is "<FinanceEnterpriseGroup.AccountLabel>"
                column2
                    visible when (ReportingChart entered)
                        ReportingChart
                            label is "Chart"
                    paragraph
                        visible when (ReportingChart entered)
                            visible when (RecordExists)
                                ParentRel.DisplayOrder
                        visible when (GeneralLedgerChartAccount entered)
                            ChartSection
                            DisplayChartType
                                label is "ChartType"
                column3
                    paragraph
                        visible when (PostingAccountNoChartInContext)
                            ActiveDisplayTag
                                no label
                                display as tag
                                    color of green when (Active)
                        visible when (DerivedFutureChangesAll)
                            FutureChangesDisplayTag
                                no label
                                display as tag
                                    color of yellow when (DerivedFutureChangesAll)
                    visible when (ChartType.Posting)
                        paragraph
                            AccountType
                                label is "<FinanceEnterpriseGroup.AccountLabel>Type"
                            AccountSubType
                                label is "SubType"
