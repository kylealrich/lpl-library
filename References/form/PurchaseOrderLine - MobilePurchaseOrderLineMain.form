MobilePurchaseOrderLineMain is a Form
    title is "Main"
    Layout
        single column
            Item
                label is "Item"
                select is MobileItemFilterSelection
                display as required when (true)
                when value changed
                    refresh TaxCodeRequired
            Description
                use text area
                display as required when (DescriptionRequired)
        paragraph
            Quantity
                display as required when (QuantityRequired)
            EnteredBuyUOM
                select is MobileActiveUnitsOfMeasure
                display as required when (EnteredBuyUOMRequired)
        single column
            paragraph
                EnteredUnitCost
                    show up to 10 characters
                CostCode
                    label is "CostSource"
                    display as text
                VendorItem
                    select is MobileVendorItemSelect
                ItemType
                    when value changed
                        refresh ServiceCodeRequired
                        refresh EnteredBuyUOMRequired
                        refresh DescriptionRequired
                        refresh TaxCodeRequired
            visible when (not ItemType.Service)
                ServiceCode
                    display as text
            visible when (ItemType.Service)
                ServiceCode
                    display as required when (ServiceCodeRequired)
                    when value changed
                        refresh QuantityRequired
        paragraph
            visible when (HasBlanketOrStandingContract)
                Contract
                    display as text
            visible when (not HasBlanketOrStandingContract)
                Contract
                    select is MobileContractsForCostDefaulting
            visible when (ForContractLineDisplay)
                ContractLine
                    display as text
            visible when (ItemType.Service)
                visible when (ForContractLineEdit)
                    visible when (not HasBlanketOrStandingContract)
                        EnteredContractLine
                            label is "ContractLine"
                            select is ContractLinesForAServiceItemPO
                            when value changed
                                refresh ServiceCodeRequired
                                refresh EnteredBuyUOMRequired
                                refresh DescriptionRequired
                                refresh TaxCodeRequired
        paragraph
            ShipToLocation
                label is "ShipToLocation"
                select is MobileInventoryLocations
                when value changed
                    refresh TaxCodeRequired
        header3 of "TaxInformation"
        single column
            Taxable
                when value changed
                    refresh TaxCodeRequired
        visible when (Taxable)
            paragraph
                TaxCode
                    label is "TaxableCode"
                    select is MobileTaxCodeSelect
                    display as required when (TaxCodeRequired)
            paragraph
                TaxUsageCode
                    select is MobileTaxUsageCodesSelectList
            paragraph
                TaxableUnitCost
            paragraph
                ExtendedTaxableAmount
                    label is "ExtendedTotal"
                    display as text
