DeleteAttachment is an ActionForm
    action is DeleteAttachment
    title is "RequestToDeleteTerm_andConditionAttachment"
    Layout
        paragraph
            ContractArticle
                label is "Article"
                display as text
            ContractArticle.Title
                no label
                display as text
        paragraph
            ContractTermAndCondition
                label is "Term_andCondition"
                display as text
            Title
                no label
                display as text
        visible when (AttachmentsExistingNotYetDeleted)
            single column
                PrmAttachmentToDelete
                    label is "ExistingAttachment"
                    select is TermAndConditionAttachmentSelect
        visible when (AttachmentsToBeAddedExist)
            single column
                PrmAttachmentToWithdraw
                    label is "AttachmentToBeAdded"
                    select is AttachmentsAddedSelect
