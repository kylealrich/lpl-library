ProposedItemsSpreadsheetForm is a Form
    title is "AttachProposedItemsSpreadsheet"
    called out actions only
    Layout
        single column
            text of "Reference_Recall_GroupOf<RecallGroup>And_Recall_NoticeOf<RecallNotice>OnSpreadsheet"
            text of "OnceSpreadsheetIsReadyAttachToListOfProposedItems"
                italics
            visible when (ItemAttachmentNotEntered)
                paragraph
                    button of "CreateCSV"
                        link is CreateCSVItemProposalNav
                        display as link
                    text of "UseToCreateASpreadsheetForEnteringItemInformation"
                        italics
                visible when (EntryMechanism.Requisitions)
                    paragraph
                        button of "TemplatesForItemProposalSpreadsheet"
                            link is ViewItemProposalSpreadsheets
                            display as link
                        text of "UseToViewOfListOf_Item_Proposal_Templates"
                            italics
            ProposedItemAttachment.File
                label is "ListOfProposedItems"
