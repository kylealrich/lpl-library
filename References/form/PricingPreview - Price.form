Price is a Form
    Layout
        two column
            column1 of 66%
                Option
                visible when (Option.PriceList)
                    paragraph
                        ListName
                            label is "PriceList*"
                            compact format
                            select is PriceLists
                        ListName.Description
                            no label
                            display as text
                visible when (Option.Promotion)
                    paragraph
                        ListName
                            label is "PriceList"
                            compact format
                            select is PriceLists
                        ListName.Description
                            no label
                            display as text
                visible when (Option.Contract)
                    paragraph
                        ContractNumber
                            label is "Contract"
                            compact format
                            select is Contracts
                        ContractNumber.Description
                            no label
                            display as text
            column2 of 34%
                paragraph
                    OrderQuantity
                        label is "Quantity"
                    SellUOM
                        label is "UOM"
                        select is ValidSellUnitsOfMeasure
                visible when (Option.Promotion)
                    paragraph
                        Promotion
                            label is "Promotion"
                            compact format
                            select is PriceListPromotionRel.PromotionForPriceList
                        Promotion.Description
                            no label
                            display as text
        header2 of "PriceIn_<SellUOM>"
        three column distributed
            visible when (IsBaseCurrency)
                display as text
                    column1
                        SellUOM
                            label is "UOM"
                        UnitPriceCurrency
                            label is "UnitPrice"
                        GrossAmountCurrency
                            label is "GrossAmount"
                    column2
                        DiscountAmountCurrency
                            label is "Discount"
                        NetAmountCurrency
                            label is "NetAmount"
                        ProfitCurrency
                            label is "Profit"
                    column3
                        paragraph
                            TotalCost
                            TotalCostMsg
                                no label
                        ProfitMarginCurrency
                            label is "ProfitMargin"
            visible when (not IsBaseCurrency)
                display as text
                    column1
                        SellUOM
                            label is "UOM"
                        UnitPrice
                        GrossAmountBase
                            label is "GrossAmount"
                    column2
                        DiscountAmount
                            label is "Discount"
                        NetAmountBase
                            label is "NetAmount"
                        Profit
                            label is "Profit"
                    column3
                        paragraph
                            TotalCost
                            TotalCostMsg
                                no label
                        ProfitMargin
        visible when (IsMultipleUOM)
            header2 of "PriceIn_<SellingPriceUOM>"
            three column distributed
                column1
                    SellingPriceUOM
                        label is "SellPriceUOM"
                column2
                    display as text
                        visible when (IsBaseCurrency)
                            SellUnitPriceCurrency
                                label is "UnitPrice"
                        visible when (not IsBaseCurrency)
                            SellUnitPrice
                                label is "UnitPrice"
