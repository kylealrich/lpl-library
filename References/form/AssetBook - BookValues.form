BookValues is a Form
    title is "BookValues"
    Layout
        three column
            column1
                Book.Currency
                    label is "BookCurrency"
                visible when (IsTwoDecimal)
                    DerivedAdditions
                        label is "Basis"
                visible when (IsThreeDecimal)
                    DerivedAdditionsThreeDecimal
                        label is "Basis"
                visible when (IsZeroDecimal)
                    DerivedAdditionsZeroDecimal
                        label is "Basis"
            column2
                blank line
                visible when (IsTwoDecimal)
                    DerivedYearToDateDepreciation
                        label is "YearToDate"
                visible when (IsThreeDecimal)
                    DerivedYearToDateDepreciationThreeDecimal
                        label is "YearToDate"
                visible when (IsZeroDecimal)
                    DerivedYearToDateDepreciationZeroDecimal
                        label is "YearToDate"
            column3
                blank line
                visible when (IsTwoDecimal)
                    DerivedLifeToDateDepreciation
                        label is "LifeToDate"
                visible when (IsThreeDecimal)
                    DerivedLifeToDateDepreciationThreeDecimal
                        label is "LifeToDate"
                visible when (IsZeroDecimal)
                    DerivedLifeToDateDepreciationZeroDecimal
                        label is "LifeToDate"
