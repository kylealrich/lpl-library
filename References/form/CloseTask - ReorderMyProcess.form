ReorderMyProcess is an ActionForm
    action is MoveTask
    title is "Move"
    Layout
        header3 of "Move<CloseTask.TaskName>"
        single column
            MoveToNewParent
                label is "ToNewParent"
            text of "<ChangingParentNote>"
                italics
        blank line
        visible when (not MoveToNewParent)
            single column
                text of "_-_OR_-_"
                    bold
            blank line
            paragraph
                MoveDirection
                    no label
                visible when (IsSummaryLevel)
                    ThisProcess
                        label is "ThisProcess"
                        select is ProcessSelect
                    ThisProcess.TaskName
                        no label
                        display as text
                visible when (IsDetailLevel)
                    ThisTask
                        label is "ThisTask"
                        select is TaskSelect
                    ThisTask.TaskName
                        no label
                        display as text
        visible when (MoveToNewParent)
            paragraph
                NewParent
                    select is ProcessSelect
                NewParent.TaskName
                    no label
                    display as text
