MobileCustomerOrderLineContext is a Form
    title is "CustomerOrderLineContext"
    restrict action CreateCustomerOrderReturnLine
    restrict action Unreleased.Create
    restrict action Unreleased.Delete
    Actions
        action is Unreleased.Delete
            hide when invalid
    Layout
        single column
            paragraph
                CustomerOrder.Company
                    display as text
                CustomerOrder.Company.Name
                    no label
                    display as text
            paragraph
                CustomerOrder
                    label is "Order"
                    display as text
                CustomerOrder.Status
                    display as text
            paragraph
                CustomerOrder.InventoryLocation
                    label is "Location"
                    display as text
                CustomerOrder.InventoryLocation.Name
                    no label
                    display as text
            paragraph
                CustomerOrder.Currency
                    display as text
                CustomerOrder.Currency.Description
                    no label
                    display as text
            visible when (IsHoldCode)
                paragraph
                    HoldCodeMessage
                        no label
                        display as text
            visible when (IsHoldCodeWithoutPO)
                paragraph
                    HoldCodeWithoutPOMessage
                        no label
                        display as text
            visible when (IsNationalHoldCodeWithPO)
                paragraph
                    NationalHoldCodeWithPOMessage
                        no label
                        display as text
            visible when (IsNationalHoldCode)
                paragraph
                    NationalHoldCodeMessage
                        no label
                        display as text
            visible when (IsCustomerGroupHoldCodeWithPO)
                paragraph
                    CustomerGroupHoldCodeWithPOMessage
                        no label
                        display as text
            visible when (IsCustomerGroupHoldCode)
                paragraph
                    CustomerGroupHoldCodeMessage
                        no label
                        display as text
