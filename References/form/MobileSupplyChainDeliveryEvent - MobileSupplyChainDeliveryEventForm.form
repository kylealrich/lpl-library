MobileSupplyChainDeliveryEventForm is a Form
    title is "DeliveryEvent"
    Layout
        four column distributed
            column1
                MobileSupplyChainDeliveryTicket.DeliverToCompanyLocation.MobileSupplyChainCompany
                    label is "DeliverToCompany"
                    display as text
                PerformedAction
                    display as text
            column2
                MobileSupplyChainDeliveryTicket.DeliverToCompanyLocation.MobileSupplyChainLocation
                    label is "DeliverToLocation"
                    display as text
                create stamp.actor
                    label is "PerformedBy"
                    display as text
            column3
                MobileSupplyChainDeliveryTicket.InforTrackingNumber
                    display as text
                TimeSubmitted
                    label is "EventDateAndTime"
                    display as text
            column4
                MobileSupplyChainDeliveryTicket.DocumentNumber
                    display as text
                MobileSupplyChainDeliveryTicket.DerivedVendor
                    display as text
        four column distributed
            column1
                visible when (EmployeeID entered)
                    EmployeeID
                        display as text
                visible when (EmployeeID not entered)
                    DerivedBlankDisplay
                        label is "EmployeeID"
                        display as text
                visible when (HasSignature)
                    text of "Signature"
                    Signature.File
                        label is "Signature"
                        display as image up to 6 lines
                            missing image is random background
                visible when (not HasSignature)
                    DerivedBlankDisplay
                        label is "Signature"
                        display as text
            column2
                DerivedRecipient
                    label is "RecipientName"
                    display as text
            column3
                visible when (PackageCount entered)
                    PackageCount
                        display as text
                visible when (PackageCount not entered)
                    DerivedBlankDisplay
                        label is "PackageCount"
                        display as text
