PurgeInvalidUserListViewsForm is an ActionForm
    action is PurgeInvalidUserListViews
    title is "PurgeInvalidUserListViews"
    Layout
        paragraph
            text of "ThisWillPurgeUserListViewRecordsThatReferenceMissingActor,Folder,BusinessViewAnd/OrBusinessListsIncludingAuditHistory."
        paragraph
            ParamOption
        valid when (ParamOption.ActorOnly)
            paragraph
                ParamActor
                text of "or"
                ParamDeletedActor
        valid when (ParamOption.FolderOnly)
            paragraph
                ParamFolder
                text of "or"
                ParamDeletedFolder
