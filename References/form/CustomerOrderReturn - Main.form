Main is a Form
    Layout
        visible when (not RecordExists)
            paragraph
                Company
                Company.Name
                    no label
                    display as text
        visible when (Company.ManualReturnNumbering)
            paragraph
                CustomerOrderReturn
                    display as required
        two column distributed
            paragraph
                BillingProcessLevel
                    label is "ProcessLevel"
                BillingProcessLevel.Name
                    no label
                    display as text
            paragraph
                InventoryLocation
                    label is "Location"
                    show up to 16 characters
                InventoryLocation.Name
                    no label
                    display as text
                    show up to 16 characters
        two column distributed
            paragraph
                BillingInvoiceType
                    label is "InvoiceType"
                BillingInvoiceType.Description
                    no label
                    display as text
                CreateCreditMemo
            paragraph
                ReasonCode
                    label is "CreditMemoReasonCode"
                ReasonCode.Description
                    no label
                    display as text
        two column distributed
            paragraph
                Currency
                Currency.Description
                    no label
                    display as text
            paragraph
                Customer
                    select is CustomerContextCompanySelectList
                Customer.Name
                    no label
                    display as text
        two column distributed
            paragraph
                CustomerBillTo
                    label is "BillTo"
                CustomerBillTo.Name
                    no label
                    display as text
            paragraph
                CustomerShipTo
                    label is "ShipTo"
                CustomerShipTo.Name
                    no label
                    display as text
        two column distributed
            column1
                paragraph
                    OriginalInvoice
                        compact format
                    visible when (OriginalInvoice.IsTaxEngine)
                        OriginalInvoice.GlobalInvoiceNumber
                            label is "InvoiceNumber"
                            display as text
            column2
                paragraph
                    visible when (IsReleasedAndInvoiceCreated)
                        InvoicePrefix
                            display as text
                        DerivedCreditMemoNumber
                            label is "InvoiceNumber"
                            display as text
        two column distributed
            paragraph
                OrderNumber
                    label is "OriginalOrder"
                WarehouseShipment
                    label is "Shipment"
            paragraph
                BillingElectronicPaymentType
                    label is "ElectronicPaymentType"
        two column distributed
            column1
                BillingCustomerCreditCard
                    label is "ElectronicPaymentAccount"
                    show up to 16 characters
            column2
                ExpirationDate
        two column distributed
            column1
                Contact
            column2
                PhoneNumber
                    label is "TelephoneNumber"
        two column distributed
            column1
                PostingDate
            column2
                Date
                    label is "TransactionDate"
        two column distributed
            column1
                FreightCode
            column2
                FreightCharge
                    label is "FreightCharge"
        header2 of "Global"
        paragraph
            GlobalDocumentType
