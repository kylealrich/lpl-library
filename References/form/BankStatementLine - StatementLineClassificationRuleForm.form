StatementLineClassificationRuleForm is a Form
    title is "ClassificationRuleInformation"
    Layout
        display as text
            paragraph
                CashManagementAccount
                CashManagementAccount.Title
                    no label
            three column
                BankStatement
                DerivedLineNumber
                StatementDate
            three column
                RelatedReference
                TransactionType
                DebitCreditIndicator
            three column
                paragraph
                    ISO20022DomainCode
                    ISO20022DomainCode.Description
                paragraph
                    ISO20022FamilyCode
                    ISO20022FamilyCode.Description
                paragraph
                    ISO20022SubFamilyCode
                    ISO20022SubFamilyCode.Description
            single column
                Description
                    use text area of 2 lines
            paragraph
                CashTransactionCategory
                    label is "Category"
                CashTransactionCategory.Description
                    no label
            blank line
            header2 of "CategoryAndDistributionInformationWasAssignedByTheFollowingProcessingRule"
            paragraph
                CashTransactionProcessingRuleGroup
                CashTransactionProcessingRuleGroup.Description
                    no label
            paragraph
                CashTransactionProcessingRule
                CashTransactionProcessingRule.Description
                    no label
            paragraph
                CashTransactionProcessingRule.AssignmentRule.Condition
                    no label
            visible when (CashTransactionIdentifierType entered)
                single column
                    CashTransactionIdentifierType
                    CashTransactionIdentifier
