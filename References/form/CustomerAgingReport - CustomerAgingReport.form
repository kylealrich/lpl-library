CustomerAgingReport is an ActionForm
    action is CustomerAgingReport
    Layout
        paragraph
            CustGroup
                label is "CustomerGroup"
                select is CustomerGroups
            CustGroup.Name
                no label
                display as text
        paragraph
            Activity
                label is "Project"
            Activity.Description
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        two column distributed
            column1
                paragraph
                    MajorClass
                        label is "MajorClass"
                        select is MajorClass
                    MajorClass.Description
                        no label
                        display as text
            column2
                paragraph
                    MinorClass
                        label is "MinorClass"
                        select is MinorClass
                    MinorClass.Description
                        no label
                        display as text
        header2 of "AgingOptions"
        two column distributed
            paragraph
                TransDate
                    label is "As_ofDate"
            paragraph
                FutureApps
                    label is "QualifyFutureApplications"
        paragraph
            DisplayDate
                label is "DisplayDate"
        two column distributed
            AcgAgeType
                label is "AgingDateMethod"
            AcgAgeCredits
                label is "AgeCredits"
        two column distributed
            AcgAgePymnt
                label is "AgePayments"
            AcgAgeDisputes
                label is "AgeDisputes"
        paragraph
            AgeCurrent
                label is "CurrentDays"
            AgePeriods1
                label is "Periods1\\-\\4"
            AgePeriods2
                no label
            AgePeriods3
                no label
            AgePeriods4
                no label
        paragraph
            FutureDays
                label is "FutureDays"
            AgePeriods5
                label is "Periods5\\-\\7"
            AgePeriods6
                no label
            AgePeriods7
                no label
        header2 of "Format"
        two column distributed
            DetailOption
                label is "DetailPrint"
            GainLossFl
                label is "Gain\\/\\Loss"
        two column distributed
            ActivitySort
                label is "Sort_byProject"
            AmtsOpt
                label is "TruncateAmounts"
        single column
            SortOption
                label is "ReportSequence"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CustomerAgingReportReport_RDG
            column2 of 25%
                CustomerAgingReportReport_XPT
