MobilePhysicalInventoryFreezeForm is a Form
    title is "EnterCount\\s"
    Actions
        action is Delete
            hide when invalid
    Layout
        two column
            column1
                visible when (Item.UseLinkedImage)
                    Item.ImageURL
                        display as image
                visible when (not Item.UseLinkedImage)
                    Item.Picture.File
                        display as portrait image up to 3 lines
                            missing image is random background
                                foreground text is "<Item.ItemDescriptionAbbreviation>"
            column2
                paragraph
                    visible when (RecordExists)
                        ItemRepresentativeText
                            no label
                            header4
                            bold
                            color of blue
                            display as text
        paragraph
            PhysicalInventorySelect
                label is "SelectID"
                color of blue
                display as text
            InventoryLocation
                color of blue
                display as text
                show up to 10 characters
                initial value is PhysicalInventorySelect.MobileLocation
        paragraph
            visible when (RecordExists)
                ItemRepresentativeText
                    no label
                    header4
                    bold
                    color of blue
                    display as text
        paragraph
            visible when (RecordNotExists)
                Item
                    show up to 10 characters
                Item.Description
                    no label
                    header4
                    bold
                    display as text
        paragraph
            visible when (RecordExists)
                visible when (ItemLocation.BinTracked)
                    Bin
                        display as text
                visible when (ItemLocation.LotTracked.LotRequiredAtReceipt)
                    display as text
                        Lot
                            show up to 10 characters
                visible when (MobileSublotEntered)
                    display as text
                        Sublot
                visible when (ItemLocation.SerialTracked.SerialRequiredAtReceipt)
                    Serial
                        display as text
        paragraph
            visible when (RecordNotExists)
                visible when (ItemLocation.BinTracked)
                    Bin
                visible when (ItemLocation.LotTracked.LotRequiredAtReceipt)
                    Lot
                        show up to 10 characters
                visible when (MobileSublotEntered)
                    display as text
                        Sublot
                visible when (ItemLocation.SerialTracked.SerialRequiredAtReceipt)
                    Serial
                        show up to 10 characters
        text of "_"
        paragraph
            visible when (not PhysicalInventorySelect.Status.SelectIDUpdated)
                EnteredCount
            visible when (PhysicalInventorySelect.Status.SelectIDUpdated)
                EnteredCount
                    display as text
            visible when (not CountInTransactionUOM)
                EnteredUOM
                    select is ValidTransactionUnitsOfMeasure
                    initial value is Item.StockUOM
            visible when (CountInTransactionUOM)
                EnteredUOM
                    display as text
            visible when (not NotEnteredInStockUOM)
                visible when (CountEntered)
                    DerivedVariance
                        bold
                        display as tag
                            color of red when (MobileAlertVariance)
            visible when (BeyondCatchWeightVariance)
                single column
                    DerivedCatchWeightVariance
                        no label
                        bold
                        display as tag
                            color of yellow
        visible when (NotEnteredInStockUOM)
            paragraph
                display as text
                    text of "StockUnitOfMeasure:"
            paragraph
                display as text
                    CountQuantity
                    UnitOfMeasure
                visible when (CountEntered)
                    DerivedVariance
                        bold
                        display as tag
                            color of red when (MobileAlertVariance)
        paragraph
            visible when (RecordExistsForCatchWeightItem)
                visible when (not PhysicalInventorySelect.Status.SelectIDUpdated)
                    SecondaryCountQuantity
                    SecondaryUOM
                visible when (PhysicalInventorySelect.Status.SelectIDUpdated)
                    SecondaryCountQuantity
                        display as text
                    SecondaryUOM
                        display as text
                visible when (CountEntered)
                    SecondaryVarianceQuantity
                        display as text
            visible when (false)
                TransientDisplayUOM
                    display as text
                TransientDisplayCount
                    display as text
        paragraph
            visible when (DisplayUnitCost)
                TransientUnitCost
                    label is "UnitCostInEnteredUOM"
                    show up to 10 characters
                visible when (UnitCostEntered)
                    visible when (NotEnteredInStockUOM)
                        UnitCost
                            label is "UnitCostInStockUOM"
                            display as text
                InventoryReasonCode
                    label is "ReasonCode"
                    select is ActiveReasonCodes
                InventoryReasonCode.Description
                    no label
                    display as text
        text of "_"
        paragraph centered
            button of "back" with icon.previous-page
                link is PhysicalInventorySelect.MobileViewSelectIDs
            button of "Save" with icon.save
                action is save
