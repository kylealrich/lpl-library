ItemViewer is a CompositeForm
    title is "<DerivedFormTitle>"
    context form is ItemContext
    show panel control on left
    Actions
        action is RequestUpdateItem
            action icon is edit
    Main is a Panel
        form is Main
    ClassesAndCodes is a Panel
        form is ItemClassesAndCodes
    Miscellaneous is a Panel
        form is Miscellaneous
    UserFields is a Panel
        form is UserFields
    UnitsOfMeasure is a Panel
        list is ItemUOM set.ItemUOMsForView
