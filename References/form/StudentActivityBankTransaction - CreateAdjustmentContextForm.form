CreateAdjustmentContextForm is a Form
    title is "BankAdjustment"
    Layout
        five column table
            column1
                visible when (not TransactionExists)
                    paragraph
                        StudentActivityDistrict
                            label is "SchoolDistrict"
                            display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivityBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                        initial value is StudentActivitySchool.DefaultBankAccount
                paragraph
                    StudentActivityBankTransaction
                        label is "TransactionNumber"
                        select is BankTransactions
                visible when (Status.Entered)
                    header3 of "DetailInformation"
                    visible when (not TransactionExists)
                        paragraph
                            SchoolActivityAccount
                                label is "Activity"
                                compact format
                                select is SchoolActivityAccountSelectList
                    visible when (TransactionExists)
                        paragraph
                            TotalDetailAmount
            column2
                visible when (not TransactionExists)
                    paragraph
                        StudentActivityDistrict.Name
                            no label
                            display as text
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                paragraph
                    StudentActivityBankAccount.Description
                        no label
                paragraph
                    Description
                paragraph
                    blank line
                visible when (Status.Entered)
                    visible when (not TransactionExists)
                        paragraph
                            SchoolActivityAccount.Description
                                no label
                    visible when (TransactionExists)
                        visible when (OutOfBalance)
                            paragraph
                                OutOfBalanceAmount
            column3
                paragraph
                    blank line
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                paragraph
                    Status
                        display only
                paragraph
                    TransactionAmount
                        label is "Amount"
                paragraph
                    blank line
                paragraph
                    visible when (Status.Entered)
                        visible when (not TransactionExists)
                            ActivityDetailAmount
                                label is "Amount"
            column4
                paragraph
                    blank line
                paragraph
                    blank line
                paragraph
                    SchoolAccountCode
                        select is AccountCodeList
                paragraph
                    AmountType
            column5
                paragraph
                    blank line
                paragraph
                    blank line
                paragraph
                    SchoolAccountCode.StudentActivityAccountCode.Description
                        no label
                        display as text
                paragraph
                    TransactionDate
