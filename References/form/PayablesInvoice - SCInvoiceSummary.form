SCInvoiceSummary is a Form
    title is "InvoiceInformation"
    Layout
        header2 of "GeneralInformation"
        display as text
            two column
                Company
                Company.Name
                    no label
                    display as text
            two column
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            two column
                Invoice
                    label is "Invoice"
                visible when (SupplierCreatedInvoiceStatus.UnsubmittedSupplierCreatedInvoice)
                    text of "InvoiceHasNotBeenSubmitted"
                visible when (SupplierCreatedInvoiceStatus.SubmittedSupplierCreatedInvoice)
                    text of "InvoiceHasBeenSubmitted"
            two column
                InvoiceDate
                DueDate
            visible when (TaxAmount entered)
                single column
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmountIncludingTax"
                    TaxAmount
            visible when (TaxAmount not entered)
                single column
                    InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
            paragraph
                InvoiceCurrency
                    no label
