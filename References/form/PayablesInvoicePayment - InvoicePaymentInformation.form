InvoicePaymentInformation is a Form
    Layout
        two column
            column1
                paragraph
                    DueDate
                paragraph
                    PaymentAmount.CurrencyAmount
                        label is "PaymentAmount"
                paragraph
                    BankTransactionCode
                        label is "PaymentCode"
                paragraph
                    CashCode
                        select is CashCodes
                paragraph
                    SeparatePayment
                paragraph
                    PayImmediately
                paragraph
                    Enclosure
            column2
                paragraph
                    PayVendor
                paragraph
                    InvoiceGroup
                paragraph
                    first PayablesOnHoldRel.HoldCode
                        display as text
                paragraph
                    IncomeCode
                        display as text
                    ReportableIncomeAmount
                        display as text
                paragraph
                    PayablesInvoice.NumberOfSplitPayments
                        display as text
                paragraph
                    PayablesInvoice.SplitPaymentSchedule
                        display as text
