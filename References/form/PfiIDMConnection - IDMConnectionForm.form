IDMConnectionForm is a Form
    title is "IDMConnection"
    Layout
        single column
            PfiConfiguration
            PfiIDMConfiguration.AuthenticationType
            visible when (PfiIDMConfiguration.AuthenticationType.OAUTH1)
                PfiIDMConfiguration.IDMServerURL
                PfiIDMConfiguration.User
                PfiIDMConfiguration.Password
                PfiIDMConfiguration.SecretKey
            visible when (PfiIDMConfiguration.AuthenticationType.OAUTH2)
                PfiIDMConfiguration.IONApiFile
            button of "TestConnection"
                action is TestConnection
