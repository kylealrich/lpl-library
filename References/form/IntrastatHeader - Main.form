Main is a Form
    Layout
        two column distributed
            column1
                paragraph
                    SystemCode
                        label is "System"
                paragraph
                    TransactionType
                        when value changed
                            refresh VendorRequired
                            refresh CustomerRequired
                paragraph
                    ReportYear
                paragraph
                    Status
                        display as text
                paragraph
                    CurrencyRate
                visible when (TaxEntity.VATRegistrationCountry entered)
                    paragraph
                        TaxEntity.VATRegistrationCountry
                            label is "VATRegistrationCountry/\\Jurisdiction/Number"
                            display as text
                    paragraph
                        TaxEntity.VATRegistrationNumber
                            no label
                            display as text
            column2
                paragraph
                    DocumentNumber
                paragraph
                    NatureOfTransactionCode
                    NatureOfTransactionCode.Description
                        no label
                        display as text
                paragraph
                    ReportPeriod
                paragraph
                    TaxPointDate
                        label is "IntrastatDate"
                paragraph
                    PurchasingCompany
                    PurchaseOrder
                        label is "PurchaseOrderNumber"
                        display as text
                visible when (TaxEntity.BranchID entered)
                    paragraph
                        TaxEntity.BranchID
                            label is "BranchIdentification"
                            display as text
        two column distributed
            column1
                header2 of "Customer"
                paragraph
                    CustomerGroup
                paragraph
                    Customer
                        label is "Number"
                        display as required when (CustomerRequired)
                        when value changed
                            refresh CustomerRequired
                    Customer.Name
                        no label
                        display as text
                paragraph
                    CustomerCurrencyCode
                        label is "Currency"
                paragraph
                    CustomerVATCountry
                        label is "V\\A\\TCountry/\\Jurisdiction"
                paragraph
                    CustomerVATRegistrationNumber
                        label is "V\\A\\TNumber"
            column2
                header2 of "Vendor"
                paragraph
                    VendorGroup
                paragraph
                    Vendor
                        label is "Number"
                        display as required when (VendorRequired)
                        when value changed
                            refresh VendorRequired
                    Vendor.VendorName
                        no label
                        display as text
                paragraph
                    VendorCurrencyCode
                        label is "Currency"
                paragraph
                    VendorVATCountry
                        label is "V\\A\\TCountry/\\Jurisdiction"
                paragraph
                    VendorVATRegistrationNumber
                        label is "V\\A\\TNumber"
