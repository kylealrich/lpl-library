RecurringJournalMainForm is a Form
    title is "Main"
    Layout
        two column distributed
            paragraph
                Ledger
                Ledger.Description
                    no label
                    display as text
            paragraph
                JournalType
                RecurringJournalControl
                    label is "Journal"
                    display only
        two column distributed
            Description
                label is "Description"
            DerivedStatusDisplay
                label is "ProcessStatus"
        two column distributed
            GeneralLedgerEvent
                label is "GlobalLedgerEvent"
            DescriptionDefault
        two column distributed
            Reference
            DocumentNumber
        two column distributed
            visible when (EntityIsZoned)
                BaseZoneAccountingUnit
                    label is "<FinanceEnterpriseGroup.AccountingUnitLabel>BaseZone"
                    select is ZoneAccountingUnits
            visible when (DimensionIsZoned)
                BaseZoneDimension1
                    label is "<FinanceEnterpriseGroup.FinanceDimension1Label>BaseZone"
                    select is ZoneDimension1
        two column distributed
            Currency
            ApprovalCode
        single column
            AutoZero
                label is "AutomaticZero"
            AutoReverse
                label is "AutomaticReverse"
            CopyComments
        paragraph
            BeginningPeriod
                label is "BeginningPeriod"
                compact format
            BeginningPeriod.GeneralLedgerClosePeriod.GeneralLedgerCalendarPeriod.Date
                no label
            BeginningPeriod.GeneralLedgerCloseYear
                label is "BeginningYear"
                display only
            BeginningPeriod.PeriodName
                label is "PeriodName"
        paragraph
            EndPeriod
                label is "EndPeriod"
                compact format
            EndPeriod.GeneralLedgerClosePeriod.GeneralLedgerCalendarPeriod.Date
                no label
            EndPeriod.GeneralLedgerCloseYear
                label is "EndYear"
                display only
            EndPeriod.PeriodName
                label is "PeriodName"
        two column
            PostingDay
            TransactionDay
