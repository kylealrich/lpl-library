Finance is a Form
    Layout
        header2 of "FinanceChargeOptions"
        three column distributed
            column1
                LatePaymentAndFinanceCharges
                    label is "ChargeType"
                FinanceChargeDueDateGraceDays
                    label is "GraceDays"
                PrintFinanceChargeDocument
                    label is "PrintNotice"
                        left of field
                FinanceChargeCycle
                    label is "CycleCode"
                    select is FinanceCycle
                LatePaymentChargeRounding
                    label is "LateChargeRounding"
                        left of field
            column2
                FinanceChargeCode
                    label is "RateCode"
                    select is FinanceCodes
                DisputedTransFinanceCharged
                    label is "DisputesFinanced"
                        left of field
                ChargeMinimumFinanceCharge
                    label is "ChargeCustomerMinimum"
                        left of field
                FinanceChargeInterestRatesByDate
                    label is "InterestCharge_byDate"
                visible when (not IsReceivableCompany)
                    TransientAdministrativeFee
                        label is "AdministrativeFee"
                            left of field
                visible when (IsReceivableCompany)
                    AdministrativeFee
                        label is "AdministrativeFee"
                            left of field
            column3
                FinanceChargeCalculationMethod
                    label is "CalculationMethod"
                MinimumFinanceChargeAmount
                    label is "CustomerMinimum"
                paragraph
                    DerivedLastFinanceChargeNumber
                        label is "LastNumber"
                        display as text
                        display zero
                    button of "Change"
                        action is ChangeLastFinanceChargeNumber
                        display as link
                FinanceChargeTransactionPrefix
                    label is "Prefix"
                blank line
