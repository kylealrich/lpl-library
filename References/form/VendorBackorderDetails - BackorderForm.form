BackorderForm is a Form
    is primary
    Layout
        display as text
            paragraph
                RecordType
                Status
        paragraph
            ProcurementGroup
        visible when (IsPurchaseOrder)
            paragraph
                PurchasingCompany
                    display only
            paragraph
                PurchaseOrder
                    display only
                PurchaseOrderLine
                    display only
            paragraph
                Item
                    display only
                ItemDescription
                    display as text
            paragraph
                Vendor
                    display only
                Vendor.VendorName
            paragraph
                VendorItem
                    display only
                VendorItemDescription
                    display as text
            paragraph
                BackorderType
                    display only
            paragraph
                BackorderQuantity
        visible when (not IsPurchaseOrder)
            visible when (IsContract)
                paragraph
                    Contract
                    ContractLine
                paragraph
                    Item
                        label is "Specialitem"
                    ContractLine.ItemDescription
                        display as text
                paragraph
                    Vendor
                    Vendor.VendorName
                paragraph
                    VendorItem
                    VendorItemDescription
                        display as text
            visible when (IsVendorItem)
                paragraph
                    Item
                    Item.Description
                        display as text
                paragraph
                    Vendor
                    Vendor.VendorName
                paragraph
                    VendorItem
                    VendorItemDescription
                        display as text
            paragraph
                BackorderType
            paragraph
                StartDate
        paragraph
            EstimatedAvailabilityDate
        paragraph
            AcknowledgementType
        paragraph
            AcknowledgementDate
