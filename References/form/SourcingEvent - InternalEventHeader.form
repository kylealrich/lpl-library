InternalEventHeader is a Form
    title is "Event-Header;ThisEventWillNotBeViewedInSupplierPortal"
    Layout
        single column
            Description
                use text area
                display as required when (DescriptionAndSourcingEventTypeRequired)
        two column
            paragraph
                Buyer
                    display as required when (BuyerRequired)
                Buyer.Employee.PresentationNameSnapshot
                    no label
                    display as text
            SourcingEventType
                label is "Type"
                select is SupplierEventTypes
                display as required when (DescriptionAndSourcingEventTypeRequired)
        single column
            CreateAmendments
        header2 of "Dates"
        single column
            InformalQuote
                label is "DatesNotRequiredOnEvent"
                when value changed
                    refresh DisputeCloseDateRequired
                    refresh OpenCloseDateRequired
        visible when (not InformalQuote)
            three column
                OpenDate
                    label is "Open"
                    display as required when (OpenCloseDateRequired)
                CloseDate
                    label is "Close"
                    display as required when (OpenCloseDateRequired)
                DisputeCloseDate
                    label is "DisputeClose"
                    display as required when (DisputeCloseDateRequired)
        header2 of "ResponseOptions"
        single column
            RequireAllLines
                label is "RequireResponseForAllLines"
                display as required when (WeightingCriteria.PriceWeighting entered)
            RequireFullQuantity
                label is "RequireFullQuantityOnLines"
            AllowAddOnCharge
            AllowAlternateResponses
            VendorItemProcessing
        header2 of "DefaultLineMiscellaneous"
        two column
            RequestedDeliveryDate
            paragraph
                DefaultShipTo
                    label is "ShipTo"
                DefaultShipTo.Name
                    no label
                    display as text
        two column
            OutputType
        single column
            button of "<DerivedAwardDefaults>"
                visible when (EffectiveDateValid)
                link is DefaultHeaderAwardInformation
                display as link
        header2 of "DefaultLineDistributionInformation"
        paragraph
            DefaultAccount
                compact format
        two column
            AssetInformation.Asset
            AssetInformation.AssetTemplate
        header2 of "DefaultLineAwardInformation"
        two column
            DefaultContractType
                label is "ContractType"
            DefaultContractSubType
                label is "Subtype"
        two column
            DefaultContractClass
                label is "ContractClassification"
            DefaultContractSubClass
                label is "Subclassification"
        two column
            DefaultEffectiveDate
                label is "EffectiveDate"
            DefaultExpirationDate
                label is "ExpirationDate"
        single column
            text of "StandingOutputType"
            DefaultScheduleFrequency
                label is "ScheduleFrequency"
            DefaultMaxReleaseNumber
                label is "MaximumReleaseNumber"
        paragraph
            DefaultParticipant.Company
                label is "ParticipantCompany"
            DefaultParticipant.Location
                label is "Location"
        header2 of "ResponseAlerts"
        paragraph
            YellowAlert
                label is "YellowAlert"
            text of "DaysBeforeEventCloseDate"
        paragraph
            RedAlert
                label is "RedAlert"
            text of "DaysBeforeEventCloseDate"
