MReconciliationPeriodDetailMain is a Form
    Layout
        single column
            ReferenceNumber
            Description
            PeriodAmount
            paragraph
                TransactionDate
                visible when (DetailType.Amortization)
                    ReconciliationDetail.PostingDate
        two column distributed
            StartPeriod
                label is "StartPeriod"
                compact format
            StartPeriod.PeriodName
                no label
                display as text
        visible when (not Recurring)
            two column distributed
                EndPeriod
                    label is "EndPeriod"
                    compact format
                EndPeriod.PeriodName
                    no label
                    display as text
        single column
            visible when (not DetailType.Amortization)
                Recurring
            visible when (not Recurring)
                PeriodTerm
        visible when (not DetailType.Amortization)
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                Attachment.File
            paragraph
                visible when (HasReportDocument)
                    button of "ViewReport"
                        view ReportDocument.Document
        single column
            visible when (MultipleDetailsExistForHeader)
                visible when (DetailType.Amortization)
                    button of "<DetailType>Schedule"
                        link is MainReconciliationRecord
                        display as link
                visible when (not DetailType.Amortization)
                    button of "All<DetailType>"
                        link is MainReconciliationRecord
                        display as link
            visible when (HasDetailHeaderCommentsAndAttachments)
                button of "AllCommentsAndAttachments"
                    link is AllComments
                    display as link
