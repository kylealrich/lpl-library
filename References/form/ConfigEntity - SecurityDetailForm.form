SecurityDetailForm is a Form
    Actions
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is refresh
            label is "_"
    Layout
        header2 of "_"
        two column distributed
            column1
                ShortDisplayName
                    no label
                    header1
                    bold
                    display as text
                    raise red alert when (Status.Invalid)
                        mouse over text is "Invalid"
                    raise yellow alert when (Status.Inactive)
                        mouse over text is "Inactive"
                    raise green alert when (Status.Active)
                        mouse over text is "Active"
                paragraph
                    visible when (IsExtendedSecurityClass)
                        BaseClass
                            header3
                            display as text
                    visible when (IsCopiedSecurityClass)
                        CopiedFromSecurityClass
                            header3
                            display as text
            column2
                DerivedLastChange
                    no label
                    display as text
                paragraph
                    button of "Edit"
                        visible when (ConfigEntityExists)
                        action is Edit
                        is primary
                    button of "Extend"
                        visible when (IsSecurityClass)
                        action is ExtendSecurityClass
                    button of "Copy"
                        visible when (IsSecurityClass)
                        action is CopySecurityClass
                    button of "Activate"
                        visible when (CanActivate)
                        action is Activate
                    button of "Deactivate"
                        visible when (CanDeactivate)
                        action is Deactivate
                paragraph
                    button of "ManageSecurityClass"
                        link is RelSecurityClass.ConfigurationConsoleNav
                        display as link
                    visible when (not AssignedToSecurityRole)
                        MissingSecurityWarning
                            no label
                            display as tag
                                color of red
        single column
            LPL
                no label
                display as text
                use text area of 30 lines
            visible when (HasErrorText)
                paragraph
                    ErrorText
                        use text area of 5 lines
