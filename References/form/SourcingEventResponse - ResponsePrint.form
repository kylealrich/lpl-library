ResponsePrint is a Form
    title is "EventResponse"
    Layout
        header2 of "ResponseForSupplier:_<NotifiedSupplier.Supplier.SupplierName>"
            show border color of black
            shade
            center
        header2 of "_"
        single column
            SourcingEvent.EventVersionString
                label is "Event#_"
            SourcingEvent.Name
            SourcingEvent.EventReference
                label is "Reference"
            SourcingEvent.Description
                use text area
        blank line
        two column
            text of "DateCreated:<DerivedCreateDate>"
            visible when (Status.Submitted)
                text of "DateSubmitted:<DerivedSubmitDate>"
        visible when (not SourcingEvent.InformalQuote)
            two column
                text of "PreviewDate:<SourcingEvent.DerivedTextPreview>"
                text of "OpenDate:<SourcingEvent.DerivedTextOpenDate>"
                SourcingEvent.DerivedCloseDate
                    label is "CloseDate"
                    display with time zone
                text of "Q&AOpenDate:<SourcingEvent.DerivedTextQAOpen>"
                text of "Q&ACloseDate:<SourcingEvent.DerivedTextQAClose>"
                text of "DisputeCloseDate:<SourcingEvent.DerivedTextDisputeClose>"
            blank line
        paragraph
            LinesRespondedPrint
                label is "RespondedTo"
            visible when (ShowAlternateAlert)
                AlternateResponseLineCountPrint
                    no label
        paragraph
            SupplierTotalBidAmountInResponseCurrency
                label is "TotalBidAmount"
            visible when (BestAndFinalSupplier)
                SupplierInitialTotalBidAmountInResponseCurrency
                    label is "InitialTotalBidAmount"
            EnteredCurrencyCode
                label is "ResponseCurrency"
            AlternateResponseNotIncludedPrint
                no label
