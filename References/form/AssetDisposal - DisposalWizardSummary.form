DisposalWizardSummary is a Form
    title is "Summary"
    Layout
        blank line
        blank line
        display as text
            paragraph
                Asset
                Asset.Description
                    no label
            paragraph
                AssetDisposal
                    display as text
            paragraph
                Asset.TagNumber
            paragraph
                Asset.DerivedStatus
            blank line
            two column
                DisposalDate
                DisposalMethod
                    label is "Method"
            two column
                FullOrPartial
                DisposalQuantity
            two column
                AssetDisposalCode
                Voluntary
            single column
                DisposalProperty
                    label is "Property"
        blank line
        paragraph
            visible when (DisposalQuantityError)
                text of "DisposalQuantity<DisposalQuantity>DoesNotMatchItemQuantityToBeDisposed"
                    bold
                    color of red
        single column
            button of "ReleaseDisposal"
                valid when (Asset.ApprovalPostReleaseDisposal)
                action is AssetReleaseDisposal
            blank line
            button of "ResetDisposal"
                valid when (Asset.ApprovalUnreleasedAssetDisposalCreated)
                action is AssetResetDisposal
            blank line
            button of "SubmitForApproval"
                valid when (Asset.SubmitForApprovalValid)
                action is SubmitForApproval
            blank line
            button of "GoToAsset"
                link is AssetLink
