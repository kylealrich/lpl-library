MobileContractAttachmentForm is a Form
    title is "Attachment"
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            paragraph distributed
                Contract.RepresentativeText
                ContractLine
                    label is "Line"
                visible when (LineAttachmentExists)
                    Sequence
                        label is "AttachmentNumber"
                        display as text
        paragraph
            visible when (LineAttachmentExists)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        single column
            visible when (LineAttachmentExists)
                EmailAttachment
                    label is "IncludeAttachmentInEmail"
                SupplierCanView
                visible when (EligibleForSourcing)
                    SSAttachment
                        label is "SendAttachmentToSourcing"
                Source
                    display as text
