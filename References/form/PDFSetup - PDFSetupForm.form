PDFSetupForm is a Form
    is primary
    title is "PDF_Setup"
    disable field options
    called out actions only
    Layout
        paragraph
            text of "UseTheSectionsBelowToBrandYour_PDF_ReportsForAllUsers."
                header3
                bold
        four column
            column1 of 25%
                text of "First_Page_Header"
                    header3
                TFirstPageHeader.Image
                    display as photo image up to 8 lines
                        missing image is frameworksettings
                text of "TheCoverImageDisplayedAtTheTopOfOnlyTheVeryFirstPageOfA_PDF."
                paragraph
                    visible when (FirstPageHeaderConfigured)
                        button of "Update"
                            action is ConfigureFirstPageHeader
                            raise yellow alert when (TFirstPageHeader.Status.Inactive)
                                mouse over text is "Inactive"
                        button of icon.delete
                            action is DeleteFirstPageHeader
                    visible when (not FirstPageHeaderConfigured)
                        button of "Add"
                            action is ConfigureFirstPageHeader
                            is primary
            column2 of 25%
                text of "Page_Header"
                    header3
                TPageHeader.Image
                    display as photo image up to 8 lines
                        missing image is frameworksettings
                text of "TheHeaderImageDisplayedAtTheTopOfEveryPageOfA_PDF."
                paragraph
                    visible when (PageHeaderConfigured)
                        button of "Update"
                            action is ConfigurePageHeader
                            raise yellow alert when (TPageHeader.Status.Inactive)
                                mouse over text is "Inactive"
                        button of icon.delete
                            action is DeletePageHeader
                    visible when (not PageHeaderConfigured)
                        button of "Add"
                            action is ConfigurePageHeader
                            is primary
            column3 of 25%
                text of "Page_Footer"
                    header3
                TPageFooter.Image
                    display as photo image up to 8 lines
                        missing image is frameworksettings
                text of "TheFooterImageDisplayedAtTheBottomOfEveryPageOfA_PDF."
                paragraph
                    visible when (PageFooterConfigured)
                        button of "Update"
                            action is ConfigurePageFooter
                            raise yellow alert when (TPageFooter.Status.Inactive)
                                mouse over text is "Inactive"
                        button of icon.delete
                            action is DeletePageFooter
                    visible when (not PageFooterConfigured)
                        button of "Add"
                            action is ConfigurePageFooter
                            is primary
            column4 of 25%
                text of "List_Header"
                    header3
                ShadePreview
                    no label
                    display as text
                text of "_"
                text of "TheFontAndFillColorsToUseForStylingEveryListHeaderInA_PDF."
                paragraph
                    visible when (ListHeaderShadeConfigured)
                        button of "Update"
                            action is ConfigureListHeaderFillStyle
                        button of icon.delete
                            action is DeleteListHeaderShadeStyle
                    visible when (not ListHeaderShadeConfigured)
                        button of "Add"
                            action is ConfigureListHeaderFillStyle
                            is primary
