ReviewTransactionApplicationContext is a Form
    title is "ReviewTransaction"
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
            Company.Currency
                no label
                display as text
            ReceivableInvoiceDetailRel.Customer
                display as text
            ReceivableInvoiceDetailRel.Customer.Name
                no label
                display as text
            visible when (Status.ApplicationPosted)
                GeneralLedgerDate
                    label is "GlobalLedgerDate"
                    display as text
                ApplicationAmount.CurrencyAmount
                    display as text
            visible when (not Status.ApplicationPosted)
                GeneralLedgerDate
                    label is "GlobalLedgerDate"
                ApplicationAmount.CurrencyAmount
            ReceivableInvoiceDetailRel.OriginalCurrency
                display as text
        display as text
            paragraph
                ReceivableApplication.TransType
                ReceivableApplication.Invoice
                ReceivableApplication.PaymentSeq
                ReceivableInvoiceDetailRel.DueDate
                ReceivableOperator
                    label is "Operator"
            paragraph
                ReceivableApplication.ApplicationSequence
                ReceivableInvoiceDetailRel.OpenAmount
                ReceivableInvoiceDetailRel.GeneralLedgerDate
                    label is "GlobalLedgerDate"
                ApplicationSource
                Status
            blank line
            paragraph
                text of "Credit:"
                    bold
                    align as label
                CreditTransaction.CreditType
                    label is "Type"
                CreditTransaction.CreditNumber
                    label is "Number"
                CreditTransaction.CreditCompany
                CreditTransaction.CreditCustomer
                    label is "Customer"
                CreditTransaction.CreditBatch
                    label is "Batch"
                CreditTransaction.CreditSequence
                    label is "Sequence"
                visible when (CreditTransaction.CreditType.Payment)
                    ReceivablePaymentRel.PaymentOpen
                visible when (not CreditTransaction.CreditType.Payment)
                    ReceivableCreditInvoiceDetailRel.OpenAmount
                CreditTransaction.CreditApplicationAmount.CurrencyAmount
                    label is "AppliedAmount"
