KitItemContext is a Form
    Layout
        three column distributed
            paragraph
                visible when (not RecordExists)
                    ItemGroup
                    ItemGroup.Description
                        no label
                        display as text
                visible when (RecordExists)
                    ItemGroup.ItemGroupDescription
                        label is "ItemGroup"
                        display as text
            paragraph
                visible when (not RecordExists)
                    KitItem.Company
                    KitItem.Company.Name
                        no label
                        display as text
                visible when (RecordExists)
                    KitItem.Company.DerivedCompanyDisplay
                        label is "Company"
                        display as text
            paragraph
                visible when (not RecordExists)
                    KitItem.InventoryLocation
                        label is "Location"
                    KitItem.InventoryLocation.Name
                        no label
                        display as text
                visible when (RecordExists)
                    KitItem.InventoryLocation.DerivedInventoryLocationIDName
                        label is "Location"
                        display as text
        paragraph
            visible when (not RecordExists)
                KitItem.Item
                    label is "KitItem"
                display as text
                    KitItem.Item.Description
                        no label
                    KitItem.Item.Description2
                        no label
            visible when (RecordExists)
                display as text
                    KitItem.Item.ItemAndDescriptionDisplay
                        label is "KitItem"
                    KitItem.Item.Description2
                        no label
        three column
            visible when (RecordExists)
                MakeCode
                    display as text
            visible when (not RecordExists)
                MakeCode
            Active
            visible when (MakeToOrderExists)
                ItemForKitItemRel.StockUOM
                    label is "UOM"
                    display as text
        visible when (MakeToOrderExists)
            three column
                Notes
                ProcedureCode
                    label is "Procedure"
                OrderSize
                    label is "StandardOrderSize"
