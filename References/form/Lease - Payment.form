Payment is a Form
    Layout
        three column distributed
            column1
                paragraph
                    Lessor
                        label is "CurrentLessor"
                    Lessor.VendorName
                        no label
                        display as text
                FirstPaymentDate
                PaymentTiming
            column2
                LeaseInvoicePrefix
                    label is "InvoicePrefix"
                visible when (DefaultLeaseInterestRate)
                    InterestRate
                        label is "LesseeDiscountRate"
                        mouse over text is "AllowOverrideMustBeEnabledInTheRateTableToEnterRate"
                        display as required when (IsUnreleased)
                    ImplicitInterestRate
                        display as text
                visible when (not DefaultLeaseInterestRate)
                    InterestRate
                        label is "LesseeDiscountRate"
                        display as required when (IsUnreleased)
                    ImplicitInterestRate
            column3
                LeaseAllocationCode
                    label is "AllocationCode"
                LeaseAllocationCodeType
                    label is "AllocationCodeType"
                OperatingLeaseAllocationCode
                    label is "LongTermOperatingLeaseAllocationCode"
        header2 of "Accounts"
        visible when (ShowDebtAccount)
            paragraph
                visible when (not IsMonthToMonthRenewal)
                    visible when (DebtAccountEntered)
                        button of "Clear"
                            action is Unreleased.ClearDebtOrExpenseAccount
                    DebtAccount
                        label is "LeaseLiability"
                        compact format
                        display as required when (DebtAccountRequired)
                    DebtAccount.GeneralLedgerChartAccount.AccountDescription
                        label is "_"
                        display as text
        visible when (ShortTermLiabilityAccounting)
            paragraph
                visible when (ShortTermLiabilityAccountEntered)
                    button of "Clear"
                        action is Unreleased.ClearShortTermLiabilityAccount
                ShortTermLiabilityAccount
                    label is "ShortTermLiabilityAccount"
                    compact format
                    display as required when (IsUnreleased)
                ShortTermLiabilityAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
            paragraph
                visible when (LongTermLiabilityAccountEntered)
                    button of "Clear"
                        action is Unreleased.ClearLongTermLiabilityAccount
                LongTermLiabilityAccount
                    label is "LongTermLiabilityAccount"
                    compact format
                    display as required when (IsUnreleased)
                LongTermLiabilityAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
        paragraph
            visible when (not IsMonthToMonthRenewal)
                visible when (InterestAccountEntered)
                    button of "Clear"
                        action is Unreleased.ClearInterestAccount
                InterestAccount
                    label is "Interest"
                    compact format
                InterestAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
        paragraph
            visible when (not IsMonthToMonthRenewal)
                visible when (DeferredRentAccountEntered)
                    button of "Clear"
                        action is Unreleased.ClearDeferredRentAccount
                DeferredRentAccount
                    label is "DeferredRent"
                    compact format
                DeferredRentAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
        paragraph
            visible when (LongTermOperatingLeaseExpenseEntered)
                button of "Clear"
                    action is Unreleased.ClearLongTermOperatingLeaseExpenseAccount
            LongTermOperatingLeaseExpense
                label is "OperatingLeaseExpense"
                compact format
                display as required when (IsOperating)
            LongTermOperatingLeaseExpense.GeneralLedgerChartAccount.AccountDescription
                label is "_"
                display as text
