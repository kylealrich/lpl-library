BuyerEventDocument is a SummaryForm
    title is "<EventOrTemplate>#<EventVersionOrTemplate>"
    First Page Header
        Layout
            visible when (UseCompanyLogo)
                single column
                    Company.ReportLogo.File
                        no label
                        display as image
            visible when (UseGroupLogo)
                single column
                    Company.SourcingGroup.ReportLogo.File
                        no label
                        display as image
            header2 of "_"
    Page Header
        Layout
            header2 of "_"
                underline color of black
            single column
                text of "<EventOrTemplate>#<EventVersionString>:_<Name>"
                    header2
                    left align
            header2 of "_"
            blank line
    Page Footer
        Layout
            two column
                text of "<current timestamp>"
                    left align
                text of "Page<page number>"
                    right align
    Layout
        header2 of "<EventOrTemplate>#<EventVersionString>"
            show border color of black
            shade
            center
        header2 of "_"
        single column
            Name
            EventReference
                label is "Reference"
            Description
                use text area
        blank line
        two column
            Buyer.Employee.PresentationNameSnapshot
                label is "Buyer"
            SourcingEventType
                label is "EventType"
            Category
            DerivedStatus
                label is "Status"
            CurrencyCode
                label is "Currency"
            SubCategory
        blank line
        two column
            Sealed
                label is "SealedBid"
            AllowSupplierQandA
                label is "Q&AAllowed"
            RequireAllLines
                label is "RespondToAllLines"
            NumberOfAmendments
        single column
            visible when (UseBidTabulation)
                DisplayBidTabulation
        single column
            EstimatedTotal
        visible when (not InformalQuote)
            blank line
            header2 of "EventDates"
            two column
                PreviewDate
                    label is "Preview"
                    display when blank
                OpenDate
                    label is "Open"
                    display when blank
                CloseDate
                    label is "Close"
                    display as text
                    display when blank
                QandAOpenDate
                    label is "Q&AOpen"
                    display when blank
                QandACloseDate
                    label is "Q&AClose"
                    display when blank
                DisputeCloseDate
                    label is "DisputeClose"
                    display when blank
            single column
                visible when (BestAndFinalStarted)
                    BestAndFinalCloseDate
                visible when (StepTwoStarted)
                    StepTwoCloseDate
                        label is "Pricing_(StepTwo)CloseDate"
        header2 of "_"
        visible when (QuestionsExist)
            blank line
            header2 of "Questions"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventQuestion set.QuestionsPrint
        visible when (TermsExist)
            blank line
            header2 of "TermsAndConditions"
                show border color of black
                shade
                center
            header2 of "_"
            form is SETermsAndConditions
            header2 of "_"
        visible when (MeetingsExist)
            blank line
            header2 of "Meetings"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventMeeting set.MeetingsPrint
        visible when (AttachmentsExist)
            blank line
            header2 of "Attachments"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventAttachment set.AttachmentsPrint
        visible when (ContactsExist)
            blank line
            header2 of "Contacts"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventContact set.ContactsPrint
        visible when (CommentsExist)
            blank line
            header2 of "Comments"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventComment set.PrintComment
        visible when (CommoditiesExist)
            blank line
            header2 of "CommodityCodes"
                show border color of black
                shade
                center
            header2 of "_"
            list is SourcingEventCommodities set.CommoditiesPrint
        header2 of "LineDetails"
            show border color of black
            shade
            center
        header2 of "_"
        form is BuyerSELines
