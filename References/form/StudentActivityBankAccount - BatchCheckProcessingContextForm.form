BatchCheckProcessingContextForm is a Form
    propagate as a drill
    title is "<mode>BatchCheckProcessing"
    Layout
        two column
            StudentActivitySchool
                label is "School"
                select is SchoolSelectList
            StudentActivitySchool.SchoolName
                no label
        two column
            StudentActivityBankAccount
                label is "BankAccount"
                select is StudentActivityBankAccountSelectList
            Description
        visible when (NoDisbursementsAvailableForProcessing)
            single column
                NoDisbursementsForProcessingMsg
                    no label
        paragraph
            visible when (PrintedLaserCheck entered)
                button of "ViewAndPrintChecks"
                    view PrintedLaserCheck.File
                button of "ClosePaymentRecords"
                    action is ClosePaymentRecord
            visible when (DisbursementsReleasedForPaymentExist)
                button of "SelectAllReleasedDisbursements"
                    action is SelectAllDisbursementsReleasedForPayment
