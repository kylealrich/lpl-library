IDMConfigurationForm is a CompositeForm
    is primary
    title is "IDMConfiguration_<DerivedFormTitle>"
    Options is a Panel
        form is IDMAttribute
    IDMConfigurationXML is a Panel
        title is "XMLFiles"
        visible when (IDMConfiguration entered)
        list is IDMConfigurationXMLRel.IDMConfigurationXMLList
    IDMConnectionStatus is a Panel
        title is "Connection"
        visible when (IDMConfiguration entered)
        form is ConnectionForm
    IDMAdditionalAttributes is a Panel
        title is "AdditionalAttributes"
        visible when (IDMConfiguration entered)
        list is IDMAdditionalAttributesHeaderRel.IDMAdditionalAttributesList
    IDMRichTextOption is a Panel
        title is "RichTextOptions"
        visible when (IDMConfiguration entered)
        list is IDMRichTextHeaderRel.IDMRichTextHeaderList
    IDMGenerationSettings is a Panel
        title is "GenericUserSettings"
        visible when (IDMConfiguration entered)
        list is IDMGenerationUserSettingsRel.IDMGenerationUserSettingsList
