MobileUpdateReceiptLineContext is a Form
    title is "UpdateReceiptLine<PurchaseOrderReceiptLine>"
    Layout
        two column distributed
            column1
                ItemDescriptionCardViewDisplay
                    label is "Item"
                    display as text
                PurchaseOrderLine.Manufacturer.DerivedCodeDivision
                    label is "Manufacturer"
                    display as text
                ShipToLocation.RepresentativeText
                    label is "ReceivedLocation"
                    display as text
            column2
                ItemType
                    display as text
                PurchaseOrderLine.ManufacturerNumber
                    display as text
                PurchaseOrderLine.RemainingQuantity
                    label is "RemainingQuantity"
                    display as text
        visible when (AssetDetailExist)
            single column
                button of "ManageAssetDetails" with icon.document2
                    link is ManageAssetDetails
                    display as link
