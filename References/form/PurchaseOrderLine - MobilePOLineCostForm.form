MobilePOLineCostForm is a Form
    title is "POLineCost"
    Layout
        header3 of "Amounts"
        display as text
            two column grid
                column1 of 50%
                    EnteredBuyUOM
                        label is "EnteredBuyUOM"
                    EnteredUnitCost
                        label is "UnitCost"
                    OrderedAmount
                        label is "Ordered"
                    AddOnChargesForALineForUI
                        label is "TotalAOC"
                    ExtendedAmount
                        label is "ExtendedAmount"
                    visible when (Taxable)
                        visible when (HasInvoicedTaxAmount)
                            InvoicedTaxAmount
                                label is "InvoicedTax"
                        visible when (HasAccruedTaxAmount)
                            AccruedTaxAmount
                                label is "AccruedTax"
                    visible when (ItemType.Service)
                        ServiceCancelAmount
                            label is "Cancelled"
                column2 of 50%
                    PurchaseOrder.Currency
                        label is "Currency"
                    LandedUnitCost
                        label is "LandedUnitCost"
                    OpenToMatchAmount
                        label is "OpenToMatch"
                    visible when (not ItemType.Service)
                        DerivedNonServiceMatchedAmount
                            label is "Matched"
                        DerivedMatchedNotReceivedAmount
                            label is "MatchedNotReceived"
                    visible when (ItemType.Service)
                        MatchServiceAmount
                            label is "MatchedService"
