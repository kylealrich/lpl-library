ReturnAddOnChargesDetail is a Form
    is primary
    title is "ReturnAddOnChargeDetail"
    Layout
        three column distributed
            display as text
                Company.RepresentativeText
                CustomerOrderReturn
                visible when (IsLineCharge)
                    CustomerOrderReturnLine
                        label is "Line"
        header2 of "_"
        three column
            column1
                Miscellaneous
                    label is "AddOnCharge"
                    compact format
            column2
            column3
                OrderDiscount
                    label is "Discountable"
        visible when (Miscellaneous.ChargeType.UnitPrice)
            two column
                EnteredUnitPrice
                    label is "PerUnitPrice"
                UnitCost
                    label is "PerUnitCost"
        visible when (Miscellaneous.ChargeType.FlatAmount)
            two column
                EnteredPrice
                    label is "FlatAmountPrice"
                Cost
                    label is "FlatAmountCost"
        visible when (Miscellaneous.ChargeType.Percentage)
            two column
                CostPercent
                    label is "CostPercentage"
                PricePercent
                    label is "PricePercentage"
        paragraph
            SalesAccount
                label is "SalesAccount"
                compact format
        paragraph
            CostOfGoodsSoldAccount
                label is "CostOfGoodsAccount"
                compact format
