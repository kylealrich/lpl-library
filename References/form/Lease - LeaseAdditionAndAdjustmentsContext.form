LeaseAdditionAndAdjustmentsContext is a Form
    Layout
        paragraph
            visible when (IsTermRenewal)
                text of "\\RENEWAL_LEASE"
                    bold
            visible when (IsMonthToMonthRenewal)
                text of "\\MONTH_TO_MONTH_RENEWAL"
                    bold
        four column distributed
            visible when (LeaseExists)
                column1
                    CompanyRepresentativeText
                        label is "Company"
                        display as text
                    LeaseRepresentativeText
                        label is "Lease"
                        display as text
                column2
                    LeaseAccountingMethodHeader
                        label is "AccountingMethod"
                        display as text
                    visible when (LeaseExists)
                        Lessor.RepresentativeText
                            label is "CurrentLessor"
                            display as text
                column3
                    visible when (not Company.AccountingEntity.LeaseAccountingMethod.GASB87)
                        LeaseClassification
                            display as text
                    Status
                        display as tag
                            color of green when (Status.Released)
                            color of red when (Status.Closed)
                            color of red when (Status.Terminated)
                            color of red when (Status.Deactivated)
                            color of red when (Status.Processing)
                            color of red when (Status.Transferred)
                            color of yellow when (Status.Unreleased)
                            color of yellow when (Status.Modify)
                            color of yellow when (Status.Impairment)
                            color of yellow when (Status.LeaseAdjustments)
                            color of yellow when (Status.Termination)
                            color of yellow when (Status.Transfer)
                column4
                    paragraph
                        BeginDate
                            label is "From"
                            display as text
                        visible when (not IsMonthToMonthRenewal)
                            EndDate
                                label is "To"
                                display as text
                        visible when (IfMonthToMonthRenewalAndClose)
                            EndDate
                                label is "To"
                                display as text
                    paragraph
                        button of "Transfer"
                            visible when (AllowTransfer)
                            form invoke is CreateLeaseTransfer
                    visible when (HasLeaseType)
                        LeaseType
                            label is "Type"
                            display as text
                    visible when (IsTerminated)
                        TerminateDate
                            display as text
                    visible when (IsLessorTransferred)
                        text of "LeaseWasTransferredFromVendor<PreviousLessor>On<LessorTransferDate>"
                            bold
                            color of red
                            align as label
                    Currency
                        label is "LeaseCurrency"
                        display as text
        paragraph
            button of "Modification"
                visible when (AllowModificcation)
                form invoke is CreateLeaseModification
