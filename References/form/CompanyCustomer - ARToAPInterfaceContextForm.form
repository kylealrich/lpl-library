ARToAPInterfaceContextForm is a Form
    Layout
        two column
            column1
                header3 of "CustomerInformation"
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
                    Customer
                        display as text
                    Customer.Name
                        no label
                        display as text
                paragraph
                    Customer.VendorGroupAndVendor.VendorGroup
                        display as text
                    Customer.VendorGroupAndVendor.VendorGroup.Description
                        no label
                        display as text
                    Customer.VendorGroupAndVendor.Vendor
                        display as text
                    Customer.VendorGroupAndVendor.Vendor.VendorName
                        no label
                        display as text
                    paragraph
                        visible when (not HasVendor)
                            MissingVendorMsg
                                no label
                                display as tag
                                    color of yellow
                paragraph
                    TransientSelectedAmount
                        label is "SelectedAmount"
                        display as text
            column2
                header3 of "CompanyBalanceInformation"
                paragraph
                    CurrentBalance
                        label is "CompanyARBalance"
                        display as text
                paragraph
                    DerivedTotalCurrencyVendorBalance
                        label is "CompanyAPBalance"
                        display as text
                visible when (HasCurrencyMatch)
                    paragraph
                        DerivedCurrencyNetBalance
                            label is NetCompanyBalanceType
                            display as text
                        Currency
                            no label
                            display as text
                visible when (not HasVendorBalance)
                    paragraph
                        CurrentBalance
                            label is "NetARBalance"
                            display as text
                        Currency
                            no label
                            display as text
                visible when (HasCurrencyMismatch)
                    paragraph
                        NetCompanyBalanceType
                            label is "NetBalance"
                        text of "VendorBalanceCurrencyIs<VendorBalanceRel.BalanceCurrency>"
                            bold
                            italics
                            color of red
        blank line
