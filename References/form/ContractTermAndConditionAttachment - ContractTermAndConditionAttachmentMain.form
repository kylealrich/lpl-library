ContractTermAndConditionAttachmentMain is a Form
    is primary
    title is "ContractTerm_andConditionAttachment"
    Layout
        display as text
            three column distributed
                column1
                    Contract.RepresentativeText
                    paragraph
                        ContractArticle.RepresentativeText
                            label is "Article"
                        ContractTermAndCondition.DisplayOrder
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                    paragraph
                        ContractTermAndCondition.TermLevel
                        ContractTermAndCondition.RepresentativeText
                            label is "Term_andCondition"
                column3
                    paragraph
                        Contract.WorkingContractID
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
        single column
            ContractTermAndConditionAttachment
                label is "AttachmentNumber"
                display as text
                raise yellow alert when (InvalidIDMAttachment)
                    mouse over text is "<DerivedInvalidIDMAttachmentWarningMessage>"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        single column
            AttachmentReference
            DisplayOrder
                display as text
