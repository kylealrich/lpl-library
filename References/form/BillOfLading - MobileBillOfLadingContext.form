MobileBillOfLadingContext is a Form
    title is "BillOfLadingContext"
    Layout
        two column distributed
            Company
                display as text
            Location
                display as text
            Carrier
                display as text
            Company.Name
                label is "CompanyName"
                display as text
            Location.Name
                label is "LocationName"
                display as text
            Carrier.VendorName
                label is "VendorName"
                display as text
        paragraph
            BillOfLading
                display as text
        paragraph
            visible when (HasShipments)
                TotalCartons
                    display as text
            visible when (HasShipments)
                TotalCubic
                    display as text
            visible when (HasShipments)
                TotalWeight
                    display as text
