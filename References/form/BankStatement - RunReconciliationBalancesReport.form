RunReconciliationBalancesReport is an ActionForm
    action is RunReconciliationBalancesReport
    Layout
        paragraph
            PrmFromAccount
                label is "FromAccount"
            PrmToAccount
                label is "ToAccount"
        paragraph
            PrmAccountSelectionRule
                label is "AccountSelectionRule"
            PrmAccountSelectionRule.Condition
                no label
                display as text
        blank line
        paragraph
            PrmStatementDateRange.Begin
                label is "FromStatementDate"
            PrmStatementDateRange.End
                label is "ToStatementDate"
        blank line
        paragraph
            PrmLastStatementInDateRange
                label is "UpdateLastStatementInDateRange"
