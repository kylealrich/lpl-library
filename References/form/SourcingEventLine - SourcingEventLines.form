SourcingEventLines is a CompositeForm
    is primary
    title is "EventLines"
    context form is LineContext
        background is theme color
    Actions
        action is previous record
            label is "_"
            mouse over text is "PreviousRecord"
        action is next record
            label is "_"
            mouse over text is "NextRecord"
        action is Draft.Create
            action icon is create
            hide when invalid
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is save and close
        action is Draft.ReleaseEvent
            action icon is release
            hide when invalid
        action is Draft.Delete
            action icon is delete
    Line is a Panel
        form is SourcingEventLine
    Weighting is a Panel
        title is "Weighting<LineWeightingIndicator>"
        form is SourcingEventLineWeighting
    Questions is a Panel
        title is "Questions<LineQuestionCount>"
        list is SourcingEventLineQuestion set.LineQuestions
            helper list is QuestionRel.EventLineHelperQuestions
                action is AttachToEventLine
    Distributions is a Panel
        title is "Distributions<LineDistributionCount>"
        visible when (SSQuantityDistributions)
        list is SourcingEventLineDistribution set.QuantityDistribution
    PercentDistributions is a Panel
        title is "Distributions<LineDistributionCount>"
        visible when (SSPercentDistributions)
        list is SourcingEventLineDistribution set.PercentDistribution
    AmountDistributions is a Panel
        title is "Distributions<LineDistributionCount>"
        visible when (SSAmountDistributions)
        list is SourcingEventLineDistribution set.AmountDistribution
    RequisitionDistributions is a Panel
        visible when (CreatedfromRQ)
        list is SourcingEventLineSource set.ReqLineDistributions
    ContractDistributions is a Panel
        visible when (CreatedfromCM)
        list is SourcingEventLineSource set.ContractLineDistributions
    Comments is a Panel
        title is "Comments<LineCommentCount>"
        list is SourcingEventLineComment set.LineComment
    LineSource is a Panel
        list is SourcingEventLineSource set.LineSources
    Attachments is a Panel
        title is "Attachments<LineAttachmentCount>"
        list is SourcingEventLineAttachment set.LineAttachments
    AOCs is a Panel
        title is "AddOnCharges<LineAOCCount>"
        visible when (AllowAddOnCharge)
        list is SourcingEventLineAOC set.SourcingEventLineAOCs
