CreateCertification is an ActionForm
    action is Create
    title is "Certification"
    Layout
        paragraph
            display as text
                Supplier
                Supplier.SupplierName
                    label is "Name"
        paragraph
            SupplierSourceId
                label is "Contact"
                when value changed
                    refresh DisplayCommodityCode
            SupplierSourceId.MainContact.FirstAndLastName
                no label
                display as text
        paragraph
            SupplierCertification.PayablesCertificationCode
                label is "CertificationCode"
                select is SupplierCertificationCodes
                display as required
            SupplierCertification.PayablesCertificationCode.Description
                no label
                display as text
        paragraph
            SupplierCertification.CertificationEffectiveDate
                label is "EffectiveDate"
                display as required
            CertificationExpirationDate
                label is "ExpirationDate"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
                display as required when (RequireAttachment)
        single column
            visible when (DisplayCommodityCode)
                CommodityCode
                    compact format
                    select is CommodityCodesForASupplierContact
            Active
        visible when (not PortalSupplier)
            paragraph
                Alerts.YellowAlert
                text of "DaysBeforeTheCertificationExpirationDate"
                Alerts.RedAlert
                text of "DaysBeforeTheCertificationExpirationDate"
            visible when (WillDefaultAlertDays)
                single column
                    text of "DefaultYellowAndRedAlertDaysOnSupplierGroup;Yellow<SupplierGroup.YellowAlert>;Red<SupplierGroup.RedAlert>"
                        italics
