DetailForm is a Form
    is primary
    Layout
        paragraph
            PurchaseOrderReceipt
                label is "Receipt"
                display as text
        paragraph
            PurchaseOrderTransactionDetail.LineNumber
        paragraph
            Lot
                select is AvailableLotNumbersList
        paragraph
            Sublot
        paragraph
            Serial
                select is SerialNumbers
        paragraph
            visible when (not ItemLocationRel.IsAWarehouseLocationItem)
                Bin
            visible when (ItemLocationRel.IsAWarehouseLocationItem)
                Bin
                    select is BinHasItemStorageLocationRel.DistributionManagementBinList
        paragraph
            LotExpirationDate
        paragraph
            LotOnHold
        visible when (not IsCatchWeightItem)
            paragraph
                Quantity
        visible when (IsCatchWeightItem)
            paragraph
                SecondaryQuantity
                    label is "Quantity"
            paragraph
                Quantity
                    label is "StockQuantity"
