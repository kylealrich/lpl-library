SupplierPortalInvoiceContext is a Form
    disable field options
    Layout
        display as text
            visible when (TaxAmount not entered)
                four column distributed
                    column1
                        DerivedCompanyRepresentativeText
                            label is "Company"
                        InvoiceType
                            label is "Type"
                    column2
                        DerivedInvoiceAmountAndCurrency2
                            label is "InvoiceAmount"
                        InvoiceDate
                    column3
                        Status
                        DueDate
                    column4
                        visible when (Buyer entered)
                            paragraph
                                DerivedBuyerName
                                    label is "Buyer"
                                button of icon.mail
                                    visible when (DerivedBuyerEmailExists)
                                    link is "mailto:<DerivedBuyerEmail>"
                                button of icon.phone
                                    visible when (DerivedBuyerPhoneExists)
                                    link is "tel:<DerivedBuyerPhone>"
                        visible when (OverdueInvoice)
                            DerivedDaysAfterDueDate
                                label is "DaysPastDue"
            visible when (TaxAmount entered)
                five column distributed
                    column1
                        DerivedCompanyRepresentativeText
                            label is "Company"
                        InvoiceType
                            label is "Type"
                    column2
                        DerivedInvoiceAmountAndCurrencyIncludingTax
                            label is "TotalInvoiceAmount"
                        visible when (Buyer entered)
                            paragraph
                                DerivedBuyerName
                                    label is "Buyer"
                                button of icon.mail
                                    visible when (DerivedBuyerEmailExists)
                                    link is "mailto:<DerivedBuyerEmail>"
                                button of icon.phone
                                    visible when (DerivedBuyerPhoneExists)
                                    link is "tel:<DerivedBuyerPhone>"
                    column3
                        DerivedInvoiceAmountAndCurrency2
                            label is "BaseInvoiceAmount"
                        InvoiceDate
                    column4
                        TaxAmount
                        DueDate
                    column5
                        Status
                        visible when (OverdueInvoice)
                            DerivedDaysAfterDueDate
                                label is "DaysPastDue"
