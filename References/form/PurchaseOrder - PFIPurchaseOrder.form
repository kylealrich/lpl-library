PFIPurchaseOrder is a CompositeForm
    title is "ReviewPurchaseOrder"
    context form is PFIHeaderContext
        background is theme color
    restrict action Released.Update
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    PurchaseOrderLines is a Panel
        visible when (not SmartphoneDisplay)
        list is PurchaseOrderLinesRel.ViewOnlyPurchaseOrderLines
    MobilePurchaseOrderLines is a Panel
        title is "PurchaseOrderLines"
        visible when (SmartphoneDisplay)
        list is PurchaseOrderLinesRel.MobileDisplayOnlyPurchaseOrderLines
    ApprovalHistory is a Panel
        form is ApprovalHistory
