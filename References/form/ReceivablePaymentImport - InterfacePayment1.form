InterfacePayment1 is a CompositeForm
    is primary
    title is "InterfacePayments"
    context form is InterfacePayment1Context
        background is theme color
    Payments is a Panel
        visible when (IsHeaderRecord)
        list is PaymentsForHeaderRel.Payments
    Remittances is a Panel
        visible when (IsPaymentRecord)
        list is RemittancesForPaymentRel.Remittances
    CashDetails is a Panel
        visible when (ShowCashDetails)
        list is CashDetailsForPaymentRel.CashDetails
