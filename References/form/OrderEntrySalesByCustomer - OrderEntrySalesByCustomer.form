    action is OrderEntrySalesByCustomer
    Layout
        single column
            Company
                select is Companies
        blank line
        paragraph
            CustomerCode
                select is CustomerCodes
            CustomerCode.Description
                no label
                display as text
        paragraph
            Customer
                select is GroupSearchName
            Customer.Name
                no label
                display as text
        single column
            MatrixList
                label is "CustomerList"
        single column
            MarginCutoff
        paragraph
            FrOrderDate
                label is "FromOrderDate"
            ToOrderDate
                label is "ToOrderDate"
        two column
            ProcessLevel
                select is ProcessLevels
            ProcessLevel.Name
                no label
                display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                OrderEntrySalesByCustomerReport_RDG
            column2 of 25%
                OrderEntrySalesByCustomerReport_XPT
