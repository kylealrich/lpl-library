InterfaceInvoicesForm is an ActionForm
    action is InterfaceInvoices
    title is "InterfaceDocumentManagementInvoices"
    Layout
        single column
            PrmCompany
                label is "Company"
            InvoiceProcess
            PrmProcessType
                label is "ProcessType"
            PrmVendorClass
                label is "VendorClass"
            PrmVendorGroup
                label is "VendorGroup"
            PrmVendor
                label is "Vendor"
                select is InvoiceVendorSearch
            paragraph
                AutoCreateDetails
                text of "(InvoicesWithNoDetailsEnteredWillAutoCreateThem)"
            AllowMatchItemOrVendorItem
                label is "AllowMatchOnEitherItemOrVendorItem"
                    left of field
            PrmNewPostDate
                label is "NewPostDate"
            blank line
            text of "IfNewPostDateEnteredAnyPriorPostDateWillBeUpdated"
                italics
            text of "IfMatchSubmitOrReleaseIsSelectedForTheInvoiceProcess:"
                italics
            text of "PurchaseOrderInvoicesWillBeMatched"
                italics
            text of "ExpenseInvoicesRequiringApprovalWillBeSubmittedForApproval"
                italics
            text of "ExpenseInvoicesNotRequiringApprovalWillBeReleased"
                italics
