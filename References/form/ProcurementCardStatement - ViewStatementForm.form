ViewStatementForm is a CompositeForm
    title is "ProcurementCardStatement<ProcurementCardStatement>inProgram<ProcurementCardProgram>_-_<ProcurementCardProgram.Description>"
    context form is StatementContextForm
    show panel control on left
    restrict action ProcurementCardInvoiceAndRelease
    restrict action ApproveAll
    restrict action CloseAll
    restrict action RejectAll
    restrict action RecalculateChargeValues
    Actions
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Totals is a Panel
        form is Totals
    AllCharges is a Panel
        list is ProcurementCardStatementTransaction set.ViewTransactionsForAStatement
    ChargesToApprove is a Panel
        visible when (ApprovableTransactionsExist)
        list is ProcurementCardStatementTransaction set.ViewTransactionsToApproveForAStatement
    DisputedCharges is a Panel
        visible when (DisputedTransactionsExist)
        list is ProcurementCardStatementTransaction set.ViewDisputedTransactionsForAStatement
    ApprovedCharges is a Panel
        visible when (ApprovedTransactionsExist)
        list is ProcurementCardStatementTransaction set.ViewApprovedTransactionsForAStatement
    ClosedCharges is a Panel
        visible when (ClosedTransactionsExist)
        list is ProcurementCardStatementTransaction set.ClosedTransactionsForAStatement
    ChargesWithUnbalancedDistributions is a Panel
        visible when (HasDistributionsOutOfBalance)
        list is DistributionsOutOfBalanceRel.UnbalancedTransactionsForAStatement
