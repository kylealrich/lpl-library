UpdateEstimate is an ActionForm
    action is UpdateEstimate
    title is "UpdateEstimate"
    Layout
        visible when (TaskStatus.InProcess)
            header3 of "EnterYourPercentCompleteAndCommentsForTheTask"
            single column independent
                PrmPercentComplete
                    label is "PercentComplete"
                PrmComment
                    no label
                    use text area of 3 lines
            blank line
        visible when (TaskStatus.Scheduled)
            header3 of "EnterYourExpectedTimeForBeginningTask"
            two column independent
                column1
                    ScheduleForTask.BeginDate
                        label is "ScheduledBeginDate"
                        display as text
                    visible when (HasEstimate)
                        EstimateForTask.BeginDate
                            label is "EstimatedBeginDate"
                            display as text
                    PrmNewBeginDate
                        label is "UpdatedBeginDate"
                column2
                    ScheduleForTask.BeginTime
                        label is "Time"
                        display as text
                    visible when (HasEstimate)
                        EstimateForTask.BeginTime
                            label is "Time"
                            display as text
                    PrmNewBeginTime
                        label is "Time"
            blank line
        header3 of "EnterYourExpectedTimeAndHoursForCompletingTask"
        four column independent
            column1
                ScheduleForTask.DueDate
                    label is "ScheduledDueDate"
                    display as text
                visible when (HasEstimate)
                    EstimateForTask.DueDate
                        label is "EstimatedDueDate"
                        display as text
                PrmNewDueDate
                    label is "UpdatedDueDate"
            column2
                ScheduleForTask.DueTime
                    label is "Time"
                    display as text
                visible when (HasEstimate)
                    EstimateForTask.DueTime
                        label is "Time"
                        display as text
                PrmNewDueTime
                    label is "Time"
            column3
                visible when (DueTimeSensitive)
                    text of "<TimeSensitiveFormMessage>"
                        bold
                        color of red
            column4
                ScheduleForTask.LevelOfEffort
                    label is "LevelOfEffort"
                    display as text
                visible when (HasEstimate)
                    EstimateForTask.LevelOfEffort
                        label is "LevelOfEffort"
                        display as text
                PrmNewLevelOfEffort
                    label is "LevelOfEffort"
        blank line
        header3 of "ReasonForUpdatingEstimate"
        visible when (CloseManagementGroup.EstimateReasonCodeRequired)
            single column independent
                paragraph
                    reason code
                    reason code.Description
                        no label
                        display as text
        single column
            PrmReason
                no label
                use text area of 5 lines
