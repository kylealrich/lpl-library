CreateEvent is an ActionForm
    action is CreateEvent
    title is "CreateEventFromContract"
    Layout
        header2 of "NewEventValues"
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            ApplyTemplate
                label is "ApplyEventTemplate"
                select is TemplatesWithNoLines
            ApplyTemplate.Name
                no label
                display as text
        blank line
        single column
            NewName
                label is "Name"
        single column
            NewDescription
                label is "Description"
                use text area
            NewEventReference
                label is "Reference"
        paragraph
            NewSourcingEventType
                label is "Type"
                select is SupplierEventTypes
            NewSourcingEventType.Description
                no label
                display as text
        paragraph
            NewBuyer
                label is "Buyer"
            NewBuyer.Employee.PresentationNameSnapshot
                no label
                display as text
        two column
            NewCurrencyCode
                label is "Currency"
            NewAllowResponseInOtherCurrency
                label is "AllowResponses_in_aDifferentCurrency"
        paragraph
            NewCategory
                label is "Category"
                select is BuyerCategories
            NewCategory.Description
                no label
                display as text
        paragraph
            NewSubCategory
                label is "SubCategory"
                select is BuyerSubCategories
            NewSubCategory.Description
                no label
                display as text
        single column
            NewPostingOptions
                label is "SupplierPortalPostingOptions"
        two column
            NewCreateAmendments
                label is "CreateAmendments"
            NewAllowSupplierQandA
                label is "AllowSupplierQandA"
        single column
            NewOnlyNotifyResponders
                label is "SendAmendmentNotificationsOnly_toRespondingSuppliers"
        visible when (not PurchaseType.Service)
            single column
                NewAllowAddOnCharge
                    label is "AllowAddOnCharge"
        two column
            NewRequireBidBond
                label is "RequireBidBond"
            NewBidBondPercent
                label is "BidBondPercent"
        single column
            NewTwoStepBidding
                label is "TwoStepBidding"
            NewBestAndFinalOffer
                label is "Best_andFinalOffer"
        header2 of "NewEventDates"
        single column
            NewInformalQuote
                label is "DatesNotRequiredOnEvent"
        two column
            NewPreviewDate
                label is "Preview"
            NewOpenDate
                label is "Open"
            NewCloseDate
                label is "Close"
            NewQandAOpenDate
                label is "QAndAOpen"
            NewQandACloseDate
                label is "QAndAClose"
            NewDisputeCloseDate
                label is "DisputeClose"
        header2 of "NewLineAwardDefaultDates"
        two column
            NewDefaultEffectiveDate
                label is "EffectiveDate"
            NewDefaultExpirationDate
                label is "ExpirationDate"
