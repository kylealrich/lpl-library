MobileRequisition is a Form
    title is "Requisition"
    Layout
        display as text
            single column
                Company
            two column table
                column1
                    RequestingLocation
                    Requisition.NumberOfLines
                        label is "Lines"
                    DerivedFromCompany
                        label is "FromCompany"
                    RequestedDeliveryDate
                    Requisition.Status
                        label is "RequisitionStatus"
                column2
                    CreationDate
                        label is "RequestDate"
                    Requisition.TotalCurrencyField
                    DerivedFromLocation
                        label is "FromLocation"
                    LateDeliveryDate
                    Status
                        label is "LineStatus"
            single column
                button of "ViewRequisition"
                    link is ViewRequisition
