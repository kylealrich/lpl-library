ProjectEmployeeAdminContext is a Form
    Layout
        five column distributed
            column1
                ResourcePicture.File
                    display as portrait image
                        missing image is random background
                            foreground text is "<Employee.Name.Initials>"
            column2
                paragraph
                    Employee.Employee.FirstLastNameID
                        label is "Employee"
                        display as text
                    button of icon.profile
                        link is EmployeeNav
                Employee.Employee.RelationshipToOrganization
                    display as text
            column3
                paragraph
                    Employee.Employee.EmployeeWorkEmailAddress
                        label is "WorkEmail"
                        display as text
                    button of icon.mail
                        visible when (Employee.Employee.EmployeeWorkEmailAddressExists)
                        link is "mailto:<Employee.EmployeeWorkEmailAddress>"
            column4
                paragraph
                    Employee.Employee.EmployeeWorkTelephone
                        label is "WorkPhone"
                        display as text
                    button of icon.phone
                        visible when (Employee.Employee.EmployeeWorkPhoneExists)
                        link is "tel:<Employee.EmployeeWorkTelephone>"
            column5
                paragraph
                    DerivedStatusDisplay
                        no label
                        display as tag
                            color of green when (Active)
                            color of yellow when (not Active)
                    visible when (EmployeeIsInactive)
                        DerivedEmployeeActiveStatusDisplay
                            no label
                            display as tag
                                color of red when (EmployeeIsInactive)
