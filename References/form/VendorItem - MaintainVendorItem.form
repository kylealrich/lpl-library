MaintainVendorItem is a Form
    is primary
    Actions
        action is Activate
            hide when invalid
        action is Inactivate
            hide when invalid
        action is ChangeManufacturerInformation
            label is "ChangeManufacturerInfo"
            hide when invalid
        action is ReplaceAndInactivate
            label is "Replace_andInactivate"
            hide when invalid
        action is MakeDefault
            hide when invalid
        action is BackorderVendorItem
            hide when invalid
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
            hide when invalid
    Layout
        three column distributed
            paragraph
                ProcurementGroup
                ProcurementGroup.Description
                    no label
                    display as text
            Active
                display as text
            UseAsDefault
                display as text
        two column
            paragraph
                Item
                Item.Description
                    no label
                    display as text
                Item.Description2
                    no label
                    display as text
            Item.StockUOM
                label is "StockUOM"
                display as text
        paragraph
            Vendor
            Vendor.VendorName
                no label
                display as text
        paragraph
            VendorItem
            VendorItemDescription
        two column
            VendorBuyUOM.UnitOfMeasure
                label is "BuyUOM"
                select is ValidBuyUnitsOfMeasure
            VendorPriceUOM.UnitOfMeasure
                label is "PriceUOM"
                select is ValidBuyUnitsOfMeasure
        two column
            visible when (not VendorItemExists)
                Manufacturer
                    compact format
            visible when (VendorItemExists)
                Manufacturer
                    display as text
                    compact format
            visible when (not VendorItemExists)
                ManufacturerNumber
            visible when (VendorItemExists)
                ManufacturerNumber
                    display as text
        two column
            LabelerIdentificationCode
            LastLeadtime
                display as text
        two column
            MinimumOrderQuantity
                label is "MinimumQuantityPerPOLine"
            WarrantyPeriod
                label is "WarrantyDays"
