    is primary
    title is "IntercompanyBillingDocumentDistribution"
    Layout
        paragraph
            IntercompanyBillingDocumentHeader
                label is "Document"
                display as text
            IntercompanyBillingDocumentHeader.Description
                no label
                display as text
                show up to 100 characters
        blank line
        single column
            IntercompanyBillingDocumentLine
                label is "Line"
                display as text
        paragraph
            IntercompanyBillingDocumentLine.RechargeItem
                display as text
            IntercompanyBillingDocumentLine.RechargeItem.Description
                no label
                display as text
        blank line
        single column
            GLTransactionDetailRel.FinanceCodeBlock
                display as text
                compact format
            GLTransactionDetailRel.TransactionAmount
                display as text
            GLTransactionDetailRel.TransactionDate
                display as text
            GLTransactionDetailRel.PostingDate
                display as text
