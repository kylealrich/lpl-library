FinishedGoodsBurdenForm is a Form
    Layout
        single column
            FinishedGoodsBurden
                label is "Sequence"
                display as text
        paragraph
            BurdenCode
                label is "BurdenCode"
            BurdenCode.BurdenType
                display as text
            BurdenCode.Description
                no label
                display as text
        single column
            FlatAmount
        visible when (not BurdenCode.BurdenType.AmountPerBurdenUnit)
            single column
                AmountPerUnit
        visible when (BurdenCode.BurdenType.AmountPerBurdenUnit)
            single column
                AmountPerUnit
                    label is "<BurdenCode.AmountPerUnitLabel>"
                PerBurdenUnitQuantity
                    label is "<BurdenCode.PerBurdenUnitQuantityLabel>"
                PerBurdenUnitMultiplier
                    label is "<BurdenCode.PerBurdenUnitMultiplierLabel>"
        single column
            PercentageOfInventoryCost
                label is "Percent"
            CostTolerancePercentage
                label is "TolerancePercent"
        paragraph
            Vendor
            Vendor.VendorName
                no label
                display as text
        single column
            AlternateUnitOfMeasure
                label is "U\\O\\M"
            ZeroCost
                label is "Zero"
