InvoiceHoldMassUpdate is an ActionForm
    action is InvoiceHoldMassUpdate
    Layout
        single column
            PrmCompany
                label is "Company"
            PrmVendorGroup
                label is "VendorGroup"
            PrmPayGroup
                label is "PayGroup"
            blank line
            PrmInvoiceGroup
                label is "CustomInvoiceGroup"
            blank line
        paragraph
            PrmVendorClass
                label is "VendorClass"
            PrmVendorClass.Description
                no label
                display as text
        paragraph
            PrmVendor
                label is "Vendor"
            PrmVendor.VendorName
                no label
                display as text
        single column
            PrmPurchaseOrder
                label is "PurchaseOrder"
            blank line
            PrmHoldAction
                label is "HoldAction"
            PrmHoldCode
                label is "HoldCode"
                select is HoldOnInvoiceList
            blank line
            PrmStatus
                label is "InvoiceStatus"
            PrmInvoiceType
                label is "InvoiceType"
            PrmAmount
                label is "InvoiceAmount"
