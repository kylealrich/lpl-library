BookCopy is an ActionForm
    action is BookCopy
    Layout
        header2 of "SelectionOptions"
        two column
            column1
                FinanceEnterpriseGroup
                Book
                    label is "FromBook"
                AssetLife
                Company
                LocationName
                AssetType
                    label is "Type"
                    compact format
                    select is AssetTypesWithinCompany
                Property
            column2
                paragraph
                    FromDate
                        label is "FromInServiceDate"
                    ToDate
                        label is "To"
                NewBook
                    label is "ToBook"
                LifeYears
                CompanyGroup
                Division
                Release
                Category
        blank line
        header2 of "ToBookOverrides"
        blank line
        two column
            column1
                MethodOvrrd
                    label is "Method"
                    select is DepreciationMethods
            column2
                MethodOvrrd.Description
                    no label
                    display as text
        two column
            column1
                InsrvDateOvrrd
                    label is "InServiceDate"
                LifeOvrrd
                    label is "Life"
                ConventionOvrrd
                    label is "Convention"
            column2
                LifeRemOvrrd
                    label is "RemainingLife"
                LifeYearsOvrrd
                    label is "LifeYears"
                BookStatusOvrrd
                    label is "Status"
        blank line
        header2 of "OutputOptions"
        single column
            header3 of "PrintTotals"
        single column
            header4 of "Sequence"
            blank line
            paragraph
                LocOption
                    label is "Location"
            paragraph
                DivOption
                    label is "Division"
            paragraph
                TypeOption
                    label is "Type\\,Sub"
            paragraph
                AstgrpOption
                    label is "AssetGroup"
            paragraph
                AssetOption
                    label is "Asset"
            header4 of "Miscellaneous"
            blank line
            paragraph
                PropOption
                    label is "Property"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                BookCopyReport_RDG
            column2 of 25%
                BookCopyReport_XPT
