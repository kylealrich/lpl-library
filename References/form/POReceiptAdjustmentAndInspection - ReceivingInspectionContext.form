ReceivingInspectionContext is a Form
    Layout
        four column distributed
            column1
                paragraph
                    visible when (not DocumentExists)
                        Company
                            select is POCompanies
                        Company.Name
                            no label
                            display as text
                    visible when (DocumentExists)
                        Company.DerivedCompanyIDName
                            label is "Company"
                            display as text
            column2
                paragraph
                    visible when (not DocumentExists)
                        PurchaseOrderReceipt
                            label is "Receipt"
                            select is PurchaseOrderReceiptsNeedingInspection
                    visible when (DocumentExists)
                        PurchaseOrderReceipt
                            label is "Receipt"
                            display as text
            column3
                PurchaseOrderReceipt.ReferenceNumber
                    label is "ReferenceNumber"
                    display as text
            column4
                Status
                    display as tag
                        color of green when (Status.Released)
                        color of yellow when (Status.Unreleased)
        four column distributed
            visible when (Status.Released)
                DocumentDate
                    label is "InspectionDate"
                    display as text
                ReferenceNumber
                    label is "InspectionReferenceNumber"
                    display as text
            visible when (Status.Unreleased)
                DocumentDate
                    label is "InspectionDate"
                ReferenceNumber
                    label is "InspectionReferenceNumber"
            POReceiptAdjustmentAndInspection
                label is "InspectionDocumentNumber"
                display as text
