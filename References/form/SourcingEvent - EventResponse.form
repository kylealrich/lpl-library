EventResponse is a Form
    title is "Response"
    Layout
        display as text
            visible when (actor.agent(SupplierSourceId).Supplier.IsAnonymous)
                header2 of "You_must_sign_in_to_respond_to_this_event.Please_register_if_you_do_not_already_have_an_account."
                    center
            visible when (not actor.agent(SupplierSourceId).Supplier.IsAnonymous)
                single column
                    visible when (EventResponsesRel.Status.Submitted)
                        text of "YourResponseHasBeenSubmitted"
                            header2
                            bold
                            color of green
                    visible when (CompleteNotSubmitted)
                        text of "YourResponseIsComplete,ButItHasNotBeenSubmittedYet."
                            header2
                            bold
                            color of red
                    visible when (EventResponsesRel.RequirementsNotSatisfied)
                        paragraph
                            text of "YourResponseIsIncomplete"
                                header2
                                bold
                                color of red
                        visible when (EventResponsesRel.SomeLineRequired)
                            paragraph
                                text of "YouMustRespondToAtLeastOneLineForThisEvent"
                        visible when (EventResponsesRel.RequiredQuestionHeaderCondition)
                            paragraph
                                text of "MustAnswerAllRequiredQuestionsForThisEvent"
                        visible when (EventResponsesRel.RequiredQuestionLineCondition)
                            paragraph
                                text of "MustAnswerAllRequiredLineQuestionsForThisEvent"
                    paragraph
                        button of "RespondNow"
                            visible when (DisplayRespondNowButton)
                            form invoke is CreateDraftSourcingEventResponse
                            is primary
                        button of "EditResponse"
                            visible when (DisplayEditResponseButton)
                            form invoke is CreateDraftSourcingEventResponse
                            is primary
                        button of "EnterPricing"
                            visible when (DisplayEnterPricingButton)
                            form invoke is CreateDraftSourcingEventResponse
                            is primary
                        button of "EnterBestAndFinal"
                            visible when (DisplayEnterBestAndFinalButton)
                            form invoke is CreateDraftSourcingEventResponse
                            is primary
                        button of "ViewResponse"
                            visible when (DisplayViewResponseButton)
                            link is SupplierResponseCompositeNav
                            is primary
                    visible when (QuestionsExist)
                        EventQuestionResponsesCount
                            display as progress bar
                                meter range is EventQuestionsCount
                    EventLineResponseBySupplierCount
                        display as progress bar
                            meter range is EventLinesCount
                    visible when (RequireBidBond)
                        visible when (EventResponsesRel.NoResponseBidBondCondition)
                            text of "Bid_Bond:_Not_Entered"
                        visible when (not EventResponsesRel.NoResponseBidBondCondition)
                            text of "Bid_Bond:_Entered"
