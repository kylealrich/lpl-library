UpdateDatesOnContract is an ActionForm
    action is UpdateContractDate
        on completion navigate to ViewContract
    Layout
        display as text
            paragraph
                ContractGroup
                RepresentativeText
        paragraph
            EffectiveDate
                label is "CurrentEffectiveDate"
                display as text
            NewEffectiveDate
            visible when (UseCommitments)
                visible when (ContractStatus.Active)
                    text of "IfNewEffectiveDateIsEnteredContractWillBeSetToAmendmentState"
                    text of "ContractMustBeReleasedAndActivatedToUpdateCommitments"
        paragraph
            ExpirationDate
                label is "CurrentExpirationDate"
                display as text
            NewExpirationDate
            visible when (ExpirationDateEntered)
                visible when (not IsManufacturerOrDistributorContract)
        paragraph
            ContractReviewDate
                label is "CurrentReviewDate"
                display as text
            NewReviewDate
        paragraph
            LineUpdateOption
