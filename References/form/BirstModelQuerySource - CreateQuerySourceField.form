CreateQuerySourceField is an ActionForm
    action is CreateQuerySourceField
    title is "AddField"
    Layout
        single column
            PrmReplicationSet
                display as text
                initial value is ReplicationSet
            PrmRepSetBC
                display as text
                initial value is RepSetBC
            PrmBusinessClass
                display as text
                initial value is RepSetBC.BusinessClass
        two column
            column1
                PrmRepSetBCField
            column2
                PrmRepSetBCField.RelatedValue
                    no label
                    display as text
        single column
            PrmBirstFieldName
            PrmIsAttribute
            PrmIsMeasure
            visible when (false)
                PrmRelatedValue
                    initial value is PrmRepSetBCField.RelatedValue
