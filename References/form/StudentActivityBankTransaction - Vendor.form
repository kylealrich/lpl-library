Vendor is a Form
    title is "Vendor"
    Layout
        three column table
            column1
                paragraph
                    StudentActivityVendorFields.StudentActivityVendor
                        select is Vendors
                    text of "OR"
                        bold
                paragraph
                    PayablesIncomeCode
                        label is "IncomeCode"
            column2
                paragraph
                    VendorGroup
                    StudentActivityVendorFields.Vendor
                    text of "OR"
                        bold
                paragraph
                    ReportableIncomeAmount
            column3
                paragraph
                    StudentActivityVendorFields.OneTimeVendor
        visible when (TransactionExists)
            visible when (StudentActivityVendorFields.StudentActivityVendor entered)
                single column
                    StudentActivityVendorFields.StudentActivityVendor.Name
                    StudentActivityVendorFields.StudentActivityVendor.Address
            visible when (StudentActivityVendorFields.Vendor entered)
                single column
                    StudentActivityVendorFields.Vendor.VendorName
                    StudentActivityVendorFields.Vendor.CurrentAddressRel.PostalAddress
            visible when (StudentActivityVendorFields.OneTimeVendor)
                single column
                    OneTimeVendorName
                    OneTimeVendorAddress
                paragraph
                    OneTimeVendorTaxId.TaxNumber
                    OneTimeVendorTaxId.TaxNumberType
        visible when (not TransactionExists)
            header3 of "AddNewVendorOrOneTimeVendor"
            single column
                NewVendorName
                    label is "VendorName"
                NewVendorAddress
            paragraph
                NewTaxId.TaxNumber
                NewTaxId.TaxNumberType
                DefaultIncomeCode
