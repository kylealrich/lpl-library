POReceivingDashboard is a CompositeForm
    title is "PurchaseOrder<PurchaseOrder>Receipt<PurchaseOrderReceipt>"
    context form is POReceivingDashboardContext
        background is theme color
    implements DashBoardView
        show context form on top
        use 12 column grid
    restrict action Unreleased.MobileAddReceiveAll
    restrict action Unreleased.MobileCreate
    restrict action Unreleased.MobileCreateReceiptWizard
    restrict action MobileReleaseFromWizard
    Actions
        action is Unreleased.Release
        action is Unreleased.ReleaseAndPrint
            hide when invalid
        action is Unreleased.ReleaseAndPrintNoBackorders
            hide when invalid
        action is Unreleased.ReceiveAll
            hide when invalid
        navigation is UnreleasedBuyerMessages
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    LinesDetail is a Panel
        visible when (HasPOReceiptLine)
        span 12 columns
        list is PurchaseOrderReceiptLine set.LinesDetailForReceipt
    AddOnCharges is a Panel
        visible when (ReceiptAddOnChargeExists)
        span 12 columns
        list is HeaderReceiptAddOnChargesRel.MatchAnalysisList
    MatchPOInvoices is a Panel
        visible when (HasMatchPOInvoices)
        span 6 columns
        list is MatchPurchaseOrderInvoicesRel.InvoicesForPOCardList
    Adjustments is a Panel
        visible when (AdjustmentsExist)
        span 6 columns
        list is POReceiptAdjustmentsRel.AdjustmentsForReceiptCardList
    Inspections is a Panel
        visible when (InspectionsExist)
        span 12 columns
        list is POReceiptInspectionsRel.InspectionsForReceipt
    Tracking is a Panel
        visible when (ShowTrackPanel)
        span 12 columns
        list is PurchaseOrderReceiptTrackingRel.RequesterPurchaseOrderReceiptTracking
    Messages is a Panel
        valid when (HasPOReceiptMessage)
        span 6 columns
        form is Messages
    BuyerMessages is a Panel
        visible when (HasBuyerMessages)
        span 6 columns
        list is PurchaseOrderBuyerMessagesRel.ReceivingBuyerMessagesCardList
    POLines is a Panel
        span 12 columns
        template is NonServicePurchaseOrderLinesRel
            business class is POReceiptLineTemplate
                list is PurchaseOrderLineList9
