WebRunConnectionForm is a Form
    title is "WebRunConnection"
    Layout
        single column
            PfiConfiguration
            DataArea
            AuthType
        visible when (AuthType.Basic)
            header2 of "BasicAuthentication"
            single column
                WebRoot
                text of "Example:_https://example.\\com:\\8443"
                    italics
                User
                Password
        visible when (AuthType.OAuth10a)
            single column
                ServerType
            visible when (ServerType.External)
                header2 of "O\\Auth\\1.\\0aForExternalServer"
                single column
                    WebRoot
                    text of "Example:_https://example.\\com:\\8443"
                        italics
                    ConsumerKey
                    SecretKey
            visible when (ServerType.InforLawson)
                header2 of "O\\Auth\\1.\\0aForInforLawson"
                single column
                    WebRoot
                    text of "Example:_https://example.\\com:\\8443"
                        italics
                    LawsonConsumerKey
                    LawsonSecretKey
                    ServiceName
                    LawsonRunAsUser
            visible when (ServerType.Landmark)
                header2 of "O\\Auth\\1.\\0aForLandmark"
                single column
                    RunAsUser
        header2 of "Settings"
        single column
            ConnTimeOut
            TimeOut
            RetryCount
            RetryPauseTime
            ResultSize
            AdminResultSize
                display only
            EnableTLS
            button of "TestConnection"
                action is TestConnection
