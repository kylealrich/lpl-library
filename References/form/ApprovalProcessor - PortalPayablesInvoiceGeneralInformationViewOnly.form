PortalPayablesInvoiceGeneralInformationViewOnly is a Form
    title is "<PayablesInvoiceRel.DerivedFormTitle>"
    Layout
        display as text
            three column distributed
                column1
                    PayablesInvoiceRel.DerivedCompanyNameID
                        label is "Company"
                    paragraph
                        PayablesInvoiceRel.APClerk.PreferredSimplePresentationName
                            label is "Processor"
                        button of "<PayablesInvoiceRel.APClerk.Employee.EmployeeWorkEmailAddress>"
                            visible when (PayablesInvoiceRel.APClerk.Employee.EmployeeWorkEmailAddressExists)
                            link is "mailto:<PayablesInvoiceRel.APClerk.Employee.EmployeeWorkEmailAddress>"
                            display as link
                        button of "<PayablesInvoiceRel.APClerk.Employee.EmployeeWorkTelephone>"
                            visible when (PayablesInvoiceRel.APClerk.Employee.EmployeeWorkPhoneExists)
                            link is "tel:<PayablesInvoiceRel.APClerk.Employee.EmployeeWorkTelephone>"
                            display as link
                    visible when (PayablesInvoiceRel.DiscountAmountEntered)
                        PayablesInvoiceRel.DiscountDate
                    visible when (PayablesInvoiceRel.TaxInformationEntered)
                        PayablesInvoiceRel.TaxableAmount
                            label is "EnteredTaxableAmount"
                        PayablesInvoiceRel.PayablesInvoiceTaxRel.TotalInvoicedTaxableAmount
                        PayablesInvoiceRel.PayablesInvoiceTaxRel.TotalAccruedTaxableAmount
                column2
                    PayablesInvoiceRel.DerivedInvoiceAmountAndCurrency2
                        label is "InvoiceAmount"
                    PayablesInvoiceRel.VoucherNumberDisplay
                    PayablesInvoiceRel.DerivedRemitToNameID
                    visible when (PayablesInvoiceRel.DiscountAmountEntered)
                        PayablesInvoiceRel.DiscountAmount.CurrencyAmount
                            label is "DiscountAmount"
                    visible when (PayablesInvoiceRel.TaxInformationEntered)
                        PayablesInvoiceRel.TaxAmount
                            label is "EnteredTaxAmount"
                        PayablesInvoiceRel.PayablesInvoiceTaxRel.TotalInvoicedTaxAmount
                        PayablesInvoiceRel.PayablesInvoiceTaxRel.TotalAccruedTaxAmount
                column3
                    visible when (PayablesInvoiceRel.PurchaseOrderEntered)
                        paragraph
                            PayablesInvoiceRel.DisplayPurchaseOrder
                            button of "ViewPO"
                                visible when (PayablesInvoiceRel.DisplayPOLink)
                                link is PayablesInvoiceRel.FirstPOInformation
                                display as link
                    visible when (PayablesInvoiceRel.ServiceContractEntered)
                        PayablesInvoiceRel.ServiceContract
