MPayment is a Form
    title is "Payment"
    Layout
        header2 of "Payment"
        single column
            TaxExemptCode
        paragraph
            TaxCode
            TaxCode.Description
                no label
                display as text
        visible when (TaxOutputDueAccount)
            single column
                EntityTaxCodeRel.TaxOutputDueAccount
                    label is "TaxAccount"
                    display only
                    compact format
        visible when (TaxOutputAccount)
            single column
                EntityTaxCodeRel.TaxOutputAccount
                    label is "TaxAccount"
                    display only
                    compact format
        two column distributed
            TaxPointDate
                label is "Date"
            CheckNumber
                label is "PaymentNumber"
        two column distributed
            CashInAdvance.TransactionAmount
                label is "DownPayment"
            LetterOfCredit
        header2 of "Shipment"
        single column
            CustomerOrder
                label is "Order"
            WarehouseShipment
                label is "Shipment"
        paragraph
            FreightCode
            FreightCode.BillingFreightDescription
                no label
                display as text
        single column
            FreightCharge.TransactionAmount
                label is "FreightCharge"
        header2 of "SalesData"
        paragraph
            Territory
            Territory.Description
                no label
                display as text
        paragraph
            SalesRepresentative
                label is "SalesRepresentative1"
            SalesRepresentative.Name
                no label
                display as text
        paragraph
            CommissionRate1
                label is "Commission"
        paragraph
            SalesRepresentative2
                label is "SalesRepresentative2"
            SalesRepresentative2.Name
                no label
                display as text
        two column distributed
            paragraph
                CommissionRate2
                    label is "Commission"
            paragraph
                CommissionSplitPercentage
                    label is "Split"
        header2 of "CustomerPO"
        single column
            CustomerPurchaseOrder
        header2 of "Global"
        single column
            GlobalDocumentType
