Patient is a Form
    is primary
    title is "Patient"
    Layout
        visible when (not RecordExists)
            paragraph
                Company
                Company.Name
                    no label
                    display as text
            paragraph
                Patient
                    label is "PatientI\\D"
        visible when (RecordExists)
            Company.DerivedCompanyDisplay
                label is "Company"
                display as text
            Patient
                label is "PatientI\\D"
                display as text
        paragraph
            LastName
                label is "LastName"
            FirstName
                label is "FirstName"
            MiddleInitial
                label is "MiddleInitial"
        single column
            Active
            BirthDate
                label is "DateOfBirth"
            FicaNbr
                label is "SocialSecurityNumber"
            Contract
                label is "ContractNumber"
                show up to 20 characters
