Main is a Form
    Layout
        display as text
            four column distributed
                column1
                    RecordType
                    paragraph
                        Company.OrigCompany.RepresentativeText
                            label is "Company"
                        Company.OrigCompany.Currency
                            no label
                    PostDate
                        label is "PostDate"
                column2
                    Status
                    GLTransactionAmount
                        label is "Amount"
                    Description
                column3
                    TransactionNumber
                        label is "TransactionNumber"
                    Reference
                column4
                    TransactionNumberSuffix
                        label is "Suffix"
                    GeneralLedgerSourceCode
                        label is "Source"
            blank line
            two column distributed
                column1
                    paragraph
                        GLFinanceCodeBlock
                            label is "FinanceStructure"
                column2
                    header2 of "Tax"
                    paragraph
                        TaxCode
                    paragraph
                        TaxableBankAmount
                            label is "TaxableAmount"
