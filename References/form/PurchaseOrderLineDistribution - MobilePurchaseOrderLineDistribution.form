MobilePurchaseOrderLineDistribution is a Form
    title is "LineDistribution"
    restrict action Create
    restrict action Delete
    Actions
        action is save
            label is "_"
            hide when invalid
    Layout
        single column
            paragraph
                DistributionAccount
                    compact format
            visible when (PurchaseOrderLine.DistributionBy.ByQuantity)
                DistributionQuantity
            visible when (PurchaseOrderLine.DistributionBy.ByAmount)
                DistributionAmount
            visible when (PurchaseOrderLine.DistributionBy.ByPercent)
                DistributionPercent
            paragraph
                AddOnCharge
                AddOnCharge.Description
                    no label
                    display as text
            AssetInformation.Asset
                label is "Asset"
                select is MobileAssetSelect
            AssetInformation.AssetTemplate
                label is "AssetTemplate"
                select is MobileAssetTemplate
