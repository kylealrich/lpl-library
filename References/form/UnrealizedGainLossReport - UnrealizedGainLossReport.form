UnrealizedGainLossReport is an ActionForm
    action is UnrealizedGainLossReport
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        two column distributed
            column1
                GlDate
                    label is "As_ofRevalueDate"
            column2
                FutureApps
                    label is "QualifyFutureApplications"
        paragraph
            OrigCurrency
                label is "Currency"
            OrigCurrency.Description
                no label
                display as text
        two column distributed
            column1
                LossOnly
                    label is "Loss_only"
            column2
                ReverseOnly
                    label is "Reverse_only"
        two column distributed
            column1
                UpdateOption
            column2
                ReportOption
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                UnrealizedGainLossReportReport_RDG
                UnrealizedGainLossErrorReport_RDG
            column2 of 25%
                UnrealizedGainLossReportReport_XPT
                UnrealizedGainLossErrorReport_XPT
