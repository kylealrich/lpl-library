VendorDiversityCodeCertification is a Form
    is primary
    title is "VendorDiversityCode"
    Layout
        three column distributed
            column1
                paragraph
                    visible when (not RecordExists)
                        VendorGroup
                    visible when (RecordExists)
                        VendorGroup
                            display as text
                    VendorGroup.Description
                        no label
                        display as text
            column2
                paragraph
                    visible when (not RecordExists)
                        Vendor
                    visible when (RecordExists)
                        Vendor
                            display as text
                    Vendor.VendorName
                        no label
                        display as text
            column3
                paragraph
                    VendorLocation
                        label is "Location"
                        display as text
                    VendorLocation.VendorName
                        no label
                        display as text
        single column
            paragraph
                visible when (not RecordExists)
                    DiversityCode
                visible when (RecordExists)
                    DiversityCode
                        display as text
                DiversityCode.Description
                    no label
                    display as text
        three column
            DiversityEffectiveDate
            DiversityExpirationDate
                label is "ExpirationDate"
            DaysUntilExpiration
                label is "DaysUntilExpiration"
                display as text
                display as tag
                    color of red when (DateIsExpired)
        single column
            ReviewDate
        visible when (EffectiveDateEntered)
            two column
                column1
                    paragraph
                        Alerts.YellowAlert
                        text of "DaysBeforeTheDiversityCodeExpirationDate"
                column2
                    paragraph
                        Alerts.RedAlert
                        text of "DaysBeforeTheDiversityCodeExpirationDate"
        two column
            CertificationComplete
            Active
        single column
            Attachment.File
                label is "Attachment"
