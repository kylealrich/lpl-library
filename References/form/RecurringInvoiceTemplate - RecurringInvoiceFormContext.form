RecurringInvoiceFormContext is a Form
    Layout
        four column distributed
            column1
                paragraph
                    visible when (not HasRecurringInvoiceTemplate)
                        Company
                        Company.Name
                            no label
                            display as text
                    visible when (HasRecurringInvoiceTemplate)
                        Company.RepresentativeText
                            label is "Company"
                            display as text
            column2
                paragraph
                    visible when (not HasRecurringInvoiceTemplate)
                        RecurringInvoiceTemplate
                            label is "RecurringInvoice"
                    visible when (HasRecurringInvoiceTemplate)
                        RecurringInvoiceTemplate
                            label is "RecurringInvoice"
                            display as text
            column3
                visible when (not HasRecurringInvoiceTemplate)
                    Description
                visible when (HasRecurringInvoiceTemplate)
                    Description
                        display as text
            column4
                paragraph
                    visible when (HasRecurringInvoiceTemplate)
                        Status
                            label is "InvoiceStatus"
                            display as text
        visible when (HasRecurringInvoiceTemplate)
            display as text
                visible when (InvoiceEntryTemplate.Expanded)
                    four column distributed
                        DerivedExpandedInvoiceEntryTemplateLineAmountForPrinting
                            label is "LineExtendedAmountTotal"
                        DerivedExpandedInvoiceEntryTemplateAOCAmountForPrinting
                            label is "AddOnChargeGrossAmountTotal"
                        DerivedExpandedInvoiceEntryTemplateTotalAmountForPrinting
                            label is "DerivedTotalAmount"
                        visible when (InvoiceAmount entered)
                            SignedTransactionAmount
                                label is "EnteredInvoiceAmount"
                        visible when (InvoiceAmount not entered)
                            text of "*Invoice_\\Amount_\\Will_\\Be_\\Derived*"
                                bold
                visible when (InvoiceEntryTemplate.Standard)
                    four column distributed
                        visible when (HasLineOrLineItems)
                            DerivedStandardInvoiceEntryTemplateLineItemAmount
                                label is "LineItemAmountTotal"
                        DerivedStandardInvoiceEntryTemplateDistributionAmount
                            label is "DistributionAmountTotal"
                        visible when (InvoiceAmount entered)
                            InvoiceAmount
                                label is "EnteredInvoiceAmount"
                        visible when (InvoiceAmount not entered)
                            text of "*Invoice_\\Amount_\\Will_\\Be_\\Derived*"
                                bold
                two column distributed
                    visible when (HasTaxableLinesAddOnChargesOrDistributions)
                        paragraph
                            text of "*Tax_Calculated_Upon_Receivable_Invoice_Creation*"
                                bold
                    visible when (HasSeparateStartStopDates)
                        paragraph
                            text of "*Start_And_Stop_Dates_May_Impact_Final_Invoice_Amounts*"
                                bold
                visible when (false)
                    HasSeparateStartStopDates
