ContractTermAndConditionWithAttachment is a CompositeForm
    is primary
    title is "ContractTerm_andCondition"
    context form is TermAndConditionContext
        background is theme color
    restrict action SupplierAddTermDuringNegotiation
    restrict action AddTermDuringNegotiation
    restrict action SupplierAddAttachment
    Actions
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is refresh
            label is "_"
    TermAndCondition is a Panel
        title is "Term_andCondition"
        form is TermAndConditionForm
    AdditionalTermLevels is a Panel
        visible when (NotLevelFour)
        list is ChildTermAndConditionRel.ChildTermsAndConditions
    Attachments is a Panel
        list is ContractTermAndConditionAttachment set.ContractTermAndConditionAttachment
    History is a Panel
        visible when (ShowHistoryPanel)
        list is ContractTermAndConditionUpdate set.ContractTermAndConditionHistory
