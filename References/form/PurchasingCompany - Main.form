Main is a Form
    Layout
        header2 of "General"
        two column distributed
            column1
                RequireUnitOfMeasure
                ReopenPurchaseOrderLine
                    label is "ReopenClosedP\\OLine"
                DefaultProcessLevelFromHeaderLocation
                    label is "DefaultProcessLevelFromHeaderShipTo"
            column2
                ReopenPurchaseOrder
                    label is "ReopenClosedP\\O"
                RequireProcessLevel
                    label is "ProcessLevelRequired"
                AllowManualAcknowledgement
        two column distributed
            column1
                AddOnChargeCloseDays
                PurchaseOrderApprovalType
            column2
                DeliveryToleranceOption
                    when value changed
                        refresh IsUseDeliveryTolerance
                visible when (IsUseDeliveryTolerance)
                    DeliveryToleranceDays
                        show up to 10 characters
                        raise blue alert when (IsZeroDeliveryToleranceDays)
                            mouse over text is "BlankValueEqualsZeroToleranceDays"
                        when value changed
                            refresh IsZeroDeliveryToleranceDays
                LastPurchaseOrder
        two column distributed
            column1
                paragraph
                    FreightTerm
                        label is "DefaultFreightTerms"
                    FreightTerm.Description
                        no label
                        display as text
            column2
                paragraph
                    ManualPurchaseOrderRange.Begin
                        label is "ManualPurchaseOrderRange"
                    ManualPurchaseOrderRange.End
                        no label
        header2 of "P\\OIssue"
        four column
            column1
                POStandardCode.StandardCommentCode[1]
                    label is "HeaderCommentCode"
            column2
                POStandardCode.StandardCommentCode[2]
                    no label
            column3
                POStandardCode.StandardCommentCode[3]
                    no label
            column4
                POStandardCode.StandardCommentCode[4]
                    no label
        header2 of "P\\OCode"
        two column distributed
            column1
                ManualPOCodeAllowed
                    label is "AllowManualEntry"
            column2
                POCodeDefaultMethod
                    label is "DefaultMethod"
        header3 of "SystemDefaults"
        two column distributed
            column1
                PurchaseOrderDefaultPOCode
                    label is "PurchaseOrder"
                InventoryControlDefaultPOCode
                    label is "InventoryControl"
                CustomerOrderDefaultPOCode
                    label is "CustomerOrder"
            column2
                VendorReturnDefaultPOCode
                    label is "VendorReturns"
                RequisitionsDefaultPOCode
                    label is "Requisitions"
                StrategicSourcingDefaultPOCode
                    label is "StrategicSourcing"
        blank line
