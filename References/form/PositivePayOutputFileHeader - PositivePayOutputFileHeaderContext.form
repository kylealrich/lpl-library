PositivePayOutputFileHeaderContext is a Form
    title is "PositivePayOutputFileHeader"
    Layout
        display as text
            four column distributed
                column1
                    CashManagementGroup
                    paragraph
                        visible when (CashCodeEntered)
                            CashCode.CashCodeAndDescription
                                label is "CashCode"
                            CashCode.Currency
                                no label
                        visible when (CashCodeGroupEntered)
                            CcgCashCodeGrp.CashCodeGroupAndDescription
                                label is "CashCodeGroup"
                    paragraph
                        BankInstCode.BankTransactionCodeName
                            label is "TransactionCode"
                    visible when (ReceiverBankEntered)
                        ReceiverBank
                    visible when (ReceiverEmailAddressEntered)
                        ReceiverEmailAddress
                column2
                    ReportOption
                    ReportOnOpen
                        label is "Open"
                    ReportOnPendingStopPay
                        label is "PendingStopPayConfirmation"
                    ReportOnStale
                        label is "StaleDate"
                column3
                    paragraph
                        DateFormat
                        IncludeDecimal
                            label is "IncludeDecimals"
                    ReportOnVoid
                        label is "Void"
                    ReportOnStop
                        label is "StopPayment"
                    ReportOnEscheat
                        label is "Escheatment"
                column4
                    CreateDate
                    TotalRecordCount
                    paragraph
                        OutputFile.File
                            label is "PositivePayOutputFile"
                        visible when (HasAttachment)
                            button of "View"
                                view OutputFile.File
                                display as link
                    visible when (CreateCsv.Yes)
                        paragraph
                            visible when (HasCSVAttachment)
                                CSVFile.File
                                    label is "CSVFile"
                                button of "View"
                                    view CSVFile.File
                                    display as link
