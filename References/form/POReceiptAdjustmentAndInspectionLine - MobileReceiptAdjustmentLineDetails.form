MobileReceiptAdjustmentLineDetails is a CompositeForm
    title is "AdjustmentLineDetails"
    context form is MobileReceiptAdjustmentLineDetailsContext
    restrict action Unreleased.DeleteAdjustment
    Actions
        action is save
            label is "_"
            hide when invalid
    Detail is a Panel
        form is MobileAdjustmentDetail
    Source is a Panel
        visible when (POLineSourceExists)
        list is POLineSourceRels.MobilePOReceiptLineSourceList
    CatchWeight is a Panel
        visible when (IsCatchWeightItem)
        form is PO33CatchWeight
    VendorItem is a Panel
        form is MobilePO33VendorItem
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is POReceiptAdjustmentAndInspectionLineCommentRel.MobileReceiptAdjustmentLineCommentList
    AdjustmentOrRejectionDetails is a Panel
        title is "<AdjustmentOrRejectionDetails>"
        visible when (IsInventoryBinLotSerialTracked)
        list is PurchaseOrderTransactionDetailsAdjRels.MobileAdditionalAdjustmentEntrys
    UDIDetails is a Panel
        title is "UDI/DSCSADetail"
        visible when (IsUDITracked)
        list is PurchaseOrderUDIDetailAdjustmentRel.MobileUDIEntrys
