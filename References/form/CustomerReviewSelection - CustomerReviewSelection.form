CustomerReviewSelection is an ActionForm
    action is CustomerReviewSelection
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        blank line
        single column
            SelectLvl
                label is "ReportOption"
        single column
            OpenRevDate
                label is "IncludeOpenReviewDates"
        single column
            RiskCd
                label is "RiskCode"
        paragraph
            MajClass
                label is "MajorClass"
                select is MajorClass
            MajClass.Description
                no label
                display as text
        paragraph
            MinClass
                label is "MinorClass"
                select is MinorClass
            MinClass.Description
                no label
                display as text
        single column
            CrVarPct
                label is "Percent_ofLimit"
        single column
            OpenOrders
                label is "IncludeOpenOrders"
        single column
            CurrBal
                label is "PastDueCompanyAmount"
        single column
            NatBal
                label is "PastDueNationalAmount"
        single column
            visible when (not Company.ExpandedAgingPeriods)
                PastDuePer
                    label is "PastDuePeriod"
            visible when (Company.ExpandedAgingPeriods)
                PastDuePer2
                    label is "PastDuePeriod"
        paragraph
        blank line
        paragraph
            CreditAnalyst
                label is "CreditAnalyst"
            CreditAnalyst.Name
                no label
                display as text
        single column
            FilePurge
                label is "PurgeFile"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CustomerReviewSelectionReport_RDG
            column2 of 25%
                CustomerReviewSelectionReport_XPT
