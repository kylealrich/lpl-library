ReportingBasispDetails is a CompositeForm
    is primary
    title is "<ReportingBasis>_ReportingBasis"
    context form is ReportingBasisContextForm
        background is theme color
    ReportingBasisPanel is a Panel
        title is "ReportingBasis"
        form is ReportingBasisForm
    ReportingBasisLedgerPanel is a Panel
        title is "LedgersForBasis"
        list is LedgerTopNode.ChildrenRel.LedgerTreeView
            helper list is LedgerHierarchyRel.LedgerHelperList
                action is AddToReportingBasis
    ReportingBasisEntityPanel is a Panel
        title is "<FinanceEnterpriseGroup.AccountingEntityLabel>ForBasis"
        list is AccountingEntityTopNode.ChildrenRel.AccountingEntityHierarchyTreeView
            helper list is AccountingEntityHierarchyRel.AccountingEntityHelperList
                action is AddToReportingBasis
    GlobalPanel is a Panel
        title is "Global"
        form is GlobalForm
