CurrentSelectedLinesContextForm is a Form
    propagate as a drill
    title is "SelectedLines"
    Layout
        four column distributed
            column1
                CashManagementAccount
                    display as text
                LineMatchField
                paragraph
                    first BankStatementReconciliation descendants.MatchedDate
                        display as text
                    first BankStatementReconciliation descendants.DerivedMatchedMessage
                        no label
                        display as text
            column2
                CashManagementAccount.Description
                    display as text
                BankStatementReconciliation
                    label is "MatchNumber"
                    display as text
                paragraph
                    first BankStatementReconciliation descendants.MatchedActor
                        display as text
                    first BankStatementReconciliation descendants.MatchedActor.PersonName.PresentationName
                        no label
                        display as text
            column3
                BankStatement
                    display as text
                LineStatus
                    display as text
            column4
                BankStatement.StatementDate
                    display as text
        header4 of "_"
        four column distributed
            column1
                StatementLineDebitAmount
                    display as text
                TransactionDebitAmount
                    label is "<DerivedTransactionTypeLabel>DebitAmount"
                    display as text
                NetReconciledDebitAmount
                    label is "ReconciledDebitDifference"
                    display as text
            column2
                StatementLineCreditAmount
                    display as text
                TransactionCreditAmount
                    label is "<DerivedTransactionTypeLabel>CreditAmount"
                    display as text
                NetReconciledCreditAmount
                    label is "ReconciledCreditDifference"
                    display as text
                visible when (HasSecondaryReconciliationTransactions)
                    ReconciledAmount
                        label is "NetReconciledDifference"
                        display as text
            column3
                blank line
                visible when (HasSecondaryReconciliationTransactions)
                    SecondaryReconTransDebitAmount
                        label is "SecondaryDebitAmount"
                        display as text
                    NetSecondaryReconciledDebitAmount
                        label is "NetSecondaryDebitDifference"
                        display as text
                visible when (not HasSecondaryReconciliationTransactions)
                    blank line
                    ReconciledAmount
                        label is "NetReconciledDifference"
                        display as text
            column4
                visible when (HasSecondaryReconciliationTransactions)
                    blank line
                    SecondaryReconTransCreditAmount
                        label is "SecondaryCredittAmount"
                        display as text
                    NetSecondaryReconciledCreditAmount
                        label is "NetSecondaryCreditDifference"
                        display as text
                    SecondaryReconciledAmount
                        label is "NetSecondaryDifference"
                        display as text
        single column
            Comment
                label is "ReconciliationComment"
                use text area of 2 lines
