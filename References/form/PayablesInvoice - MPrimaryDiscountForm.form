MPrimaryDiscountForm is a Form
    title is "PrimaryDiscountForm"
    Layout
        header2 of "DiscountSettings"
        two column distributed
            DiscountCode
            DiscountCode.Description
                no label
                display as text
        single column
            FloatDays
        two column distributed
            FlexTerms
                label is "FlexibleTerms"
            Anticipation
                label is "Anticipate"
        two column distributed
            AllowableAmountForDiscount
                label is "AllowableAmount"
                display as text
            visible when (DisplayChangeDiscountButton)
                button of "ChangeDiscount(s)"
                    action is ChangeDiscount
        three column table
            column headers
                "DiscountDate"
                "DiscountRate"
                "DiscountAmount"
            column1
                DiscountDate
                    no label
                    display as text
                DiscountDate2
                    no label
                    display as text
                DiscountDate3
                    no label
                    display as text
            column2
                DiscountPercent
                    no label
                    display as text
                DiscountPercent2
                    no label
                    display as text
                DiscountPercent3
                    no label
                    display as text
            column3
                DiscountAmount.CurrencyAmount
                    no label
                    display as text
                DiscountAmount2
                    no label
                    display as text
                DiscountAmount3
                    no label
                    display as text
