Billing is a Form
    Layout
        header4 of "Sublessee"
        two column
            column1
                CompanyAndCustomer.Company
                    label is "ReceivableCompany"
            column2
                paragraph
                    CompanyAndCustomer.Customer
                        label is "Sublessee"
                        select is CustomerContextCompanyCustomerSelectList
                    CompanyAndCustomer.Customer.Name
                        no label
                        display as text
        header4 of "IDMOptions"
        single column
            paragraph
                Printer
                    select is ActiveIDMPrinter
                visible when (Printer entered)
                    Printer.Description
                        no label
                        display as text
                button of "UpdatePrinter"
                    visible when (IsValidForUpdatePrinter)
                    action is UpdatePrinter
        header4 of "BillingDetails"
        paragraph
            InvoiceIdentifier
        blank line
        single column
            paragraph
                DeferredAssetIDCAccount
                    compact format
                DeferredAssetIDCAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
            paragraph
                DeferredAssetIncentiveAccount
                    compact format
                DeferredAssetIncentiveAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
            paragraph
                ClearingAccount
                    compact format
                ClearingAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
        two column distributed
            column1
                paragraph
                    LeaseExpenseAccount
                        compact format
                    LeaseExpenseAccount.GeneralLedgerChartAccount.AccountDescription
                        label is "_"
                        display as text
            column2
                paragraph
                    text of "Or"
                    LeaseExpenseAllocationCode
                    LeaseExpenseAllocationCode.Description
                        label is "_"
                        display as text
        two column distributed
            column1
                paragraph
                    LeaseRevenueAccount
                        compact format
                    LeaseRevenueAccount.GeneralLedgerChartAccount.AccountDescription
                        label is "_"
                        display as text
            column2
                paragraph
                    text of "Or"
                    LeaseAllocationCode
                    LeaseAllocationCode.Description
                        label is "_"
                        display as text
        single column
            paragraph
                AccruedRentAccount
                    compact format
                AccruedRentAccount.GeneralLedgerChartAccount.AccountDescription
                    label is "_"
                    display as text
