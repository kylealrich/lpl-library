CustomerRecurringInvoiceTemplateForm is a CompositeForm
    is primary
    title is "CustomerRecurringInvoice<RecurringInvoiceTemplate>"
    context form is CustomerRecurringInvoiceFormContext
        background is theme color
    Main is a Panel
        form is Main
    LineItems is a Panel
        visible when (InvoiceEntryTemplate.Standard)
        list is CustomerRecurringInvoiceTemplateLineItem set.ListRecurringInvoiceTemplateLineItem
    Lines is a Panel
        title is "Lines<DerivedLinesIndicator>"
        visible when (InvoiceEntryTemplate.Expanded)
        list is CustomerRecurringInvoiceTemplateLine set.CustomerRecurringInvoiceTemplateLines
    AddOnCharge is a Panel
        title is "AddOnCharges<DerivedHeaderAddOnChargesIndicator>"
        visible when (InvoiceEntryTemplate.Expanded)
        list is CustomerRecurringInvoiceTemplateAddOnChargesRel.CustomerRecurringInvoiceAddOnCharges
    ViewDistributions is a Panel
        title is "Distributions"
        visible when (InvoiceEntryTemplate.Expanded)
        list is CustomerRecurringInvoiceTemplateDistribution set.ExpandedRecurringInvoiceTemplateDistributionList
    Distributions is a Panel
        visible when (InvoiceEntryTemplate.Standard)
        list is CustomerRecurringInvoiceTemplateDistribution set.CustomerRecurringInvoiceTemplateDistributionList
    InvoiceComments is a Panel
        title is "Comments"
        list is CustomerRecurringInvoiceTemplateComment set.primary
    Attachments is a Panel
        list is CustomerRecurringInvoiceTemplateAttachment set.primary
