    Layout
        paragraph
            Base_BusinessClass.ProjectContractInvoiceComment
                display as text
        single column
            IsoLocale
                compact format
                raise yellow alert when (VerifyTranslations)
                    mouse over text is untranslatable:"The base data has been changed but this translation has not been verified"
        single column
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.Subject
                label is untranslatable:"Subject"
            Subject
                label is untranslatable:"Translated"
            blank line
            header4 of untranslatable:"Translation for {0}"
            Base_BusinessClass.From
                label is untranslatable:"Comment Made By"
            From
                label is untranslatable:"Translated"
