RecallProductItemActionForm is a Form
    is primary
    title is "Resolution"
    Layout
        display as text
            paragraph
                RecallNotice
                RecallNotice.Name
                    no label
            paragraph
                RecallProduct
                RecallProduct.ProductName
                    no label
            paragraph
                RecallProductItem
                RecallProductItem.Description
                    no label
            paragraph
                ItemAction
                    label is "Action"
                DisplayNumber
                    label is "Document"
                DisplayLineNbr
                    label is "LineNbr"
                InventoryLocationGroup.InventoryLocation
                    label is "Location"
            paragraph
                DisplayQuantity
                    label is "CurrentQuantity"
                DerivedUom
                    label is "UOM"
                Quantity
                    label is "NewQuantity"
            visible when (RecallProductItem.CatchWeight)
                DerivedSecondaryQty
                    label is "SecondaryQuantity"
                DerivedSecondaryUom
                CtwSecondaryQty
                    label is "NewSecondaryQuantity"
