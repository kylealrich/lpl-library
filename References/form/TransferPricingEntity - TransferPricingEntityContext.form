TransferPricingEntityContext is a Form
    title is "BillToEntity"
    Layout
        two column distributed
            column1
                paragraph
                    TransferPricingDescription
                        label is "RechargeName"
                        display as text
                paragraph
                    visible when (not CompanyExists)
                        Company
                            label is "PayablesCompany"
                            select is PayablesCompanySelectForIntercompanyBilling
                    visible when (CompanyExists)
                        PayablesCompanyDescription
                            label is "PayablesCompany"
                            display as text
            column2
                Company.GeneralLedgerCompany.AccountingEntity
                    label is "BillToEntity"
                    display as text
                visible when (CompanyExists)
                    Company.GeneralLedgerCompany.Currency
                        label is "CompanyCurrency"
                        display as text
