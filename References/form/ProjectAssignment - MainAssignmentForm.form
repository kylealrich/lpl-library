MainAssignmentForm is a Form
    Layout
        two column distributed
            column1
                paragraph
                    Employee
                    Employee.Employee.Name.PreferredFirstAndLastName
                        no label
                        display as text
            visible when (not Employee.ExcludeFromLabor)
                column2
                    paragraph
                        Employee.ProjectLaborSchedule
                            display as text
                        Employee.ProjectLaborSchedule.Description
                            no label
                            display as text
        two column distributed
            column1
                paragraph
                    ProjectRole
                    ProjectRole.Description
                        no label
                        display as text
            column2
                paragraph
                    ProjectDateRange.BeginDate
                        label is "BeginDate"
                    ProjectDateRange.EndDate
                        label is "EndDate"
        two column distributed
            visible when (not Employee.ExcludeFromLabor)
                column1
                    paragraph
                        CommittedEffort
                        visible when (HasSplits)
                            NetCommittedEffort
                                label is "Net"
                                display as text
                column2
                    BillableRate
        visible when (not Employee.ExcludeFromLabor)
            single column
                FinanceCodeBlock
                    compact format
                text of "DimensionsSetToBlank:"
                    align as label
                FinanceCodeBlockSetBlanks
                    no label
            visible when (not Project.FringeBurden.No)
                three column
                    column1
                        BurdenCode
                    column2
                        BurdenCode.Description
                            no label
                            display as text
                    column3
                        BurdenCode.Rate
                            display as text
            single column
                visible when (not Project.FringeBurden.No)
                    BurdenCodeBlock
                        compact format
                    text of "DimensionsSetToBlank:"
                        align as label
                    BurdenCodeBlockSetBlanks
                        no label
                visible when (Employee.FringeEncumbrance)
                    FringeEncumbranceCodeBlock
                        compact format
