TransactionReversalContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                        Company.Currency
                            no label
                    CompanyCustomerRel.Customer.RepresentativeText
                        label is "Customer"
                column2
                    button of "<InvoiceDetailGroupField>"
                        link is InvoiceDetailPrimaryNav
                        label is "Invoice"
                        header4
                        bold
                        display as link
                    paragraph
                        OriginalCurrency
                            label is "Currency"
                        BatchNumber
                            label is "BatchNumber"
                column3
                    TransactionDate
                    GeneralLedgerDate
                column4
                    paragraph
                        TransientSignedTransactionAmount
                            label is "InvoiceAmount"
                        TransientSignedOpenAmount
                            label is "Open"
                    paragraph
                        visible when (HasReverseHeader)
                            ReceivableInvoiceApplyReverseHeaderRel.GeneralLedgerDate
                                label is "ReversalPostDate"
                            ReceivableInvoiceApplyReverseHeaderRel.ReceivableOperator
                                label is "Operator"
            single column
                text of "_"
                visible when (HasReverseHeader)
                    visible when (not ReceivableInvoiceApplyReverseHeaderRel.HasReceivableInvoiceApplyReverseDetail)
                        text of "Transaction_\\Reversal_\\HeaderExists.EitherSelectIndividualApplicationsForReversalOrUseThe_\\Select_\\All_\\For_\\ReversalAction."
                            header4
                            bold
                            color of red
                    visible when (ReceivableInvoiceApplyReverseHeaderRel.HasReceivableInvoiceApplyReverseDetail)
                        text of "Transaction_\\Reversal_\\HeaderExists.FinishSelectingApplicationsForReversal,ThenUseThe_\\Process_\\ReversalAction."
                            header4
                            bold
                            color of red
                visible when (not HasReverseHeader)
                    visible when (HasPostedApplicationsAvailableToInvoiceReverse)
                        text of "Transaction_\\Reversal_\\HeaderDoesNotExist.ToReverseApplications,UseEitherThe_\\Create_\\Reversal_\\HeaderActionOrThe_\\Create_\\And_\\Reverse_\\AllAction."
                            header4
                            bold
                            color of red
