RiskReview is an ActionForm
    action is RiskReview
    Layout
        paragraph
            Company
                select is ARCompanies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
                bold
        paragraph
            CustGroup
                label is "CustomerGroup"
                select is CustomerGroups
            CustGroup.Name
                no label
                display as text
        paragraph
            ClearingDate
                label is "As_ofDate"
        paragraph
            UpdateOption
                label is "Update"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                RiskReviewReport_RDG
            column2 of 25%
                RiskReviewReport_XPT
