TrueCostMain is a Form
    Layout
        three column distributed
            display as text
                column1
                    paragraph
                        TrueCostStatus
                column2
                    paragraph
                        TrueCostAllocationRun.AllocationRun.ErrorCount
                            label is "WarningCount"
                        visible when (ErrorMessageEntered)
                            TrueCostAllocationRun.AllocationRun.ErrorMessage
                                no label
                                use text area of 1 lines
                column3
                    paragraph
                        TrueCostAllocationRun.AllocationRun.AllocationSnapshot
                            label is "ExpenseSnapshotName"
        three column distributed
            display as text
                column1
                    paragraph
                        TrueCostAllocationRun.AllocationRun.RunName
                column2
                    paragraph
                        visible when (RunDescriptionEntered)
                            TrueCostAllocationRun.AllocationRun.RunDescription
                column3
                    paragraph
                        visible when (not NoJournalizedTransactions)
                            button of "CalculationReport"
                                link is JournalizedCalculationReport
                                display as link
                        visible when (NoJournalizedTransactions)
                            button of "CalculationReport"
                                link is CalculationReport
                                display as link
