RequestNewSummaryProject is an ActionForm
    action is RequestNewSummaryProject
    title is "RequestNewSummary<FinanceEnterpriseGroup.ProjectLabel>"
    Layout
        section of Request
            visible when (actor.initiator)
                header2 of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_created"
            visible when (not actor.initiator)
                display as text
                    single column
                        RequestedBy
                    two column table
                        column1
                            button of "<RequesterEmail>"
                                link is "mailto:<RequesterEmail>"
                                label is "Email"
                                display as link
                            NeededBy
                        column2
                            button of "<RequesterPhone.SubscriberNumber>"
                                link is "tel:<RequesterPhone.SubscriberNumber>"
                                label is "Phone"
                                display as link
                            RequestPriority
                                label is "Priority"
                                display as tag
                                    color of red when (RequestPriority.High)
                                    color of yellow when (RequestPriority.Medium)
                                    color of green when (RequestPriority.Low)
            visible when (actor.initiator)
                two column table
                    column1 of 50%
                        RequestPriority
                            label is "Priority"
                    column2 of 50%
                        NeededBy
            single column
                action comment
                    label is "ActionComment"
                    use text area of 3 lines
        section of Main
            four column distributed
                column1
                    paragraph
                        NewProject
                            label is "New<FinanceEnterpriseGroup.ProjectLabel>"
                            show up to 20 characters
                            display as required
                column2
                    Description
                        show up to 20 characters
                        display as required
                column3
                    Active
                column4
                    Contract
            three column distributed
                column1
                    ProjectDateRange.BeginDate
                        label is "BeginDate"
                        display as required
                column2
                    ProjectDateRange.EndDate
                        label is "EndDate"
                        display as required
            two column distributed
                column1
                    paragraph
                        BudgetIdentifier
                            label is "BudgetIdentifier"
                            show up to 15 characters
                        BudgetIdentifier.Description
                            no label
                            display as text
                            show up to 20 characters
            two column distributed
                column1
                    paragraph
                        PersonResponsible
                            label is "PersonResponsible"
                            select is ActiveEmployeesOpenRestricted
                            show up to 8 characters
                        PersonResponsible.Name.PreferredFirstAndLastName
                            no label
                            display as text
                column2
                    paragraph
                        ProjectTeam
                            label is "ProjectTeam"
                            show up to 12 characters
                        ProjectTeam.Description
                            no label
                            display as text
            two column distributed
                column1
                    Watch
                column2
                    paragraph
                        WatchedBy
                        WatchedBy.Name.PreferredFirstAndLastName
                            no label
                            display as text
            two column distributed
                visible when (Contract)
                    column1
                        ProgramIncome
                    column2
                        ProgramIncomeType
            four column distributed
                column1
                    AddressCode
                column2
                    AddressCode.Description
                        no label
                        display as text
                visible when (AddressCode entered)
                    column3
                        AddressCode.PostalAddress.DisplayAddressMultiline
                            label is "Address"
                            display as text
        section of ContractInformation visible when (Contract)
            label is "Contract"
            three column distributed
                column1
                    TmpContractAmount
                        label is "ContractAmount"
                        display as required
                column2
                    TmpContractCurrency
                        label is "Currency"
                        display as required
                column3
                    TmpContractCurrency.Description
                        no label
                        display as text
            three column distributed
                column1
                    TmpContractID
                        label is "ContractID"
                        show up to 25 characters
                column2
                    TmpContractType
                        label is "ContractType"
                        show up to 10 characters
                column3
                    TmpContractMaximumFees
                        label is "MaximumFees"
            three column distributed
                column1
                    TmpContractAllocateExpenditures
                        label is "AllocateExpenditures"
                column2
                    TmpContractExcludeAP
                        label is "ExcludeUnpaidAP"
                column3
                    visible when (FinanceEnterpriseGroup.FrontEndSplits)
                        TmpFrontEndSplits
                            label is "FrontEndSplits"
            header2 of "Billing"
            three column distributed
                column1
                    TmpContractBillingMethod
                        label is "Method"
                        show up to 10 characters
                        display as required
                column2
                    visible when (TmpContractBillingMethod.CostPlus)
                        TmpContractMarkupPercent
                            label is "MarkupPercent"
                    visible when (TmpContractBillingMethod.TimeAndMaterials)
                        TmpContractMarkupPercent
                            label is "MarkupPercent"
                    visible when (TmpContractBillingMethod.RateTable)
                        TmpContractMarkupPercent
                            label is "MarkupPercent"
                column3
                    visible when (TmpContractBillingMethod.RateTable)
                        TmpContractBillingRateTable
                            label is "RateTable"
                            show up to 15 characters
            header2 of "Revenue"
            three column distributed
                column1
                    TmpContractRevenueRecognition
                        label is "RevenueRecognition"
                        display as required
                column2
                    visible when (TmpContractRevenueRecognition.Separate)
                        TmpContractRevenueMethod
                            label is "Method"
                column3
                    TmpRemainderOption
                        label is "DeferAndHoldRemainder"
            three column distributed
                column1
                    TmpSingleProjectInvoice
                        label is "SingleProjectInvoice"
                column2
                    visible when (TmpContractRevenueRecognition.Separate)
                        TmpSingleProjectRevenue
                            label is "SingleProjectRevenue"
        section of Comments
            single column
                NewSubject
                    label is "Subject"
                NewComment
                    label is "Comment"
                    use text area of 3 lines
                NewFrom
                    label is "CommentMadeBy"
                    display as text
                NewCommentDate
                    label is "Date"
                NewDocumentURL
                    label is "DocumentURL"
            paragraph
                NewAttachment.File
                    label is "Attachment"
