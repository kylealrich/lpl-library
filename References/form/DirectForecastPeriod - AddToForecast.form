AddToForecast is an ActionForm
    action is AddToForecast
    title is "AddToForecast"
    Layout
        paragraph
            PrmCashManagementGroup
                label is "CashManagementGroup"
            PrmCashManagementGroup.Description
                no label
                display as text
        paragraph
            PrmCashForecast
                label is "CashForecast"
                select is UpdatableCashForecastList
            PrmCashForecast.Description
                no label
                display as text
        paragraph
            PrmCashForecastAccount.CashManagementAccount
                label is "CashForecastAccount"
                select is CashForecastAccountSelect
                display as required when (true)
            PrmCashForecastAccount.CashManagementAccount.Title
                no label
                display as text
        paragraph
            PrmCashForecastCategory
                label is "CashForecastCategory"
                select is CashTransactionCategorySelect
            PrmCashForecastCategory.Description
                no label
                display as text
        paragraph
            PrmForecastDate
                label is "CashForecastDate"
        paragraph
            PrmCashFlow
                display as horizontal radio buttons
        visible when (PrmCashFlow.CashInflow)
            paragraph
                PrmCashInFlowAmount
                    label is "Amount"
        visible when (PrmCashFlow.CashOutflow)
            paragraph
                PrmCashOutFlowAmount
                    label is "Amount"
        paragraph
            PrmAction
                display as horizontal radio buttons
