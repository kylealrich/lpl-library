CustomerBillOfExchangeEntry is a Form
    Actions
        action is CreatedUnreleased.Update
            action icon is edit
            hide when invalid
        action is CreatedUnreleased.Release
            action icon is release
            hide when invalid
        action is Cancelled.Recreate
            action icon is copy
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is CreatedUnreleased.Create
            action icon is create
            label is "_"
            hide when invalid
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is CreatedUnreleased.Delete
            action icon is delete
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Layout
        two column distributed
            column1
                visible when (not CustomerDraftExists)
                    paragraph
                        Company
                            select is ARCompanies
                        Company.Name
                            no label
                            display as text
                        Company.Currency
                            no label
                            display as text
                visible when (CustomerDraftExists)
                    paragraph
                        RepresentativeText
                            display as text
                        Company.Currency
                            no label
                            display as text
                visible when (not CustomerDraftExists)
                    paragraph
                        Customer
                        Customer.Name
                            no label
                            display as text
                visible when (CustomerDraftExists)
                    paragraph
                        CustomerRepresentativeText
                            display as text
                visible when (not CustomerDraftExists)
                    paragraph
                        CustomerDraft.DraftNumber
                        CustomerDraft.Suffix
                visible when (CustomerDraftExists)
                    paragraph
                        CustomerDraft.DraftNumber
                            display as text
                        CustomerDraft.Suffix
                            display as text
                        Status
                            display as text
                paragraph
                    TransactionAmount
                        label is "BOEOriginalAmount"
                    OriginalCurrency
                        label is "BOEOriginalCurrency"
                    OriginalCurrency.Description
                        no label
                        display as text
                    visible when (NonBaseCurrency)
                        BaseAmount
                            display as text
                        Company.Currency
                            no label
                            display as text
                paragraph
                    DraftDate
                        label is "Bill_ofExchangeDate"
                    MaturityDate
                        label is "DueDate"
                    CancelDate
                        display as text
            column2
                paragraph
                    ReceivableProcessLevel
                        label is "ProcessLevel"
                        select is ProcessLevels
                    ReceivableProcessLevel.Name
                        no label
                        display as text
                paragraph
                    BankTransactionCode
                        label is "PaymentCode"
                    BankTransactionCode.Description
                        no label
                        display as text
                paragraph
                    BankEntity
                        label is "CustomerBank"
                    BankEntity.BankName
                        no label
                        display as text
                paragraph
                    BankAccountNumber
                        label is "CustomerBankAccount"
                    RIBKey
                paragraph
                    CurrencyRate
                        label is "ExchangeRate"
                    PayerReference
                        label is "PayersReference"
                    button of "Applications"
                        visible when (HasPayment)
                        link is CashApplicationNav
