CopyAllocation is an ActionForm
    action is CopyAllocation
    Layout
        single column
            visible when (AllocationControl.Type.Actuals)
                PrmAllocationControl
                    select is AllocationControlActualsList
            visible when (AllocationControl.Type.Budget)
                PrmAllocationControl
                    select is AllocationControlBudgetList
            PrmNewAllocation
            PrmNewDescription
            visible when (AllocationControl.Type.Actuals)
                PrmNewLedger
            visible when (AllocationControl.Type.Budget)
                PrmNewLedger
                    display as text
            PrmNewDefaultStep
            PrmNewAllocationGroup
            visible when (AllocationControl.Type.Actuals)
                PrmAllowMultiplePostings
                visible when (not CustodialAccountInterest)
                    PrmNewGeneralLedgerEvent
                visible when (CustodialAccountInterest)
                    DerivedCustodialAccountInterestEvent
                        label is "GlobalLedgerEvent"
                        display as text
