RecurringInvoiceComments is a Form
    is primary
    Layout
        three column distributed
            column1
                paragraph
                    visible when (Company not entered)
                        Company
                    visible when (Company entered)
                        Company
                            display as text
                    Company.Name
                        no label
                        display as text
                paragraph
                    visible when (RecurringInvoiceParameter not entered)
                        RecurringInvoiceParameter
                    visible when (RecurringInvoiceParameter entered)
                        RecurringInvoiceParameter
                            display as text
                    RecurringInvoiceParameter.Description
                        no label
                        display as text
                paragraph
                    visible when (RecurringInvoiceLine entered)
                        RecurringInvoiceLine
                            label is "LineNumber"
                            display as text
                    visible when (RecurringInvoiceComment entered)
                        RecurringInvoiceComment
                            label is "Sequence"
                            display as text
            column2
                paragraph
                    PrintCode
                paragraph
                    StartDate
                paragraph
                    StopDate
            column3
                paragraph
                    CommentText
