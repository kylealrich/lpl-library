PurchaseOrderHeader is a Form
    Layout
        header2 of "Shipping"
        two column distributed
            paragraph
                FreightTerm
                    label is "FreightTerms"
                FreightTerm.Description
                    no label
                    display as text
            PrintReceipt
                label is "ReceiverPrint"
        two column distributed
            paragraph
                ShipTerm
                ShipTerm.Description
                    no label
                    display as text
            paragraph
                ShippingMethod
                    label is "ShipVia"
                UnloadingPort
                    label is "Port"
        single column
            ShippingNotes
                label is "ShippingNotes"
                use text area of 3 lines
        header2 of "Currency"
        three column distributed
            paragraph
                Currency
                TransientCurrencyMultDiv
                    no label
                    display as text
            paragraph
                EnteredCurrencyConversionRate
                Revalue
            CurrencyExchangeSetPoint
        header2 of "Issue"
        three column distributed
            IssueMethod
                label is "PurchaseOrderIssueMethod"
            RevisionsInclude
                display as required when (RevisionsIncludeRequired)
            SuppressPOCost
                label is "SuppressP\\OCost"
        paragraph
            visible when (IssueMethod.EDI)
                DisplayEDINumber
                    label is "EDINumber"
                    display as text
            visible when (IssueMethod.Fax)
                FaxNumber.InternationalPrefix
                    label is "FaxCountry/\\JurisdictionCode"
                    show up to 2 characters
                FaxNumber.SubscriberNumber
                    label is "PhoneNumber"
                FaxNumber.Extension
                    label is "Extension"
                    show up to 5 characters
            visible when (IssueMethod.Email)
                EmailAddress
                    label is "Email"
            visible when (IssueMethod.Paper)
                visible when (ShowIDMPrinter)
                    paragraph
                        IDMPrinter
                            show up to 10 characters
                        IDMPrinter.Description
                            no label
                            display as text
        paragraph
            visible when (CanOverrideDocumentTemplate)
                paragraph
                    PurchaseOrderDocument
                        select is ActivePurchaseOrderDocumentsRel.PurchaseOrderDocumentListForPurchaseOrderHeader
                    button of "<PurchaseOrderDocument.PurchaseOrderDocumentTemplate.Title>"
                        view PurchaseOrderDocument.PurchaseOrderDocumentTemplate.File
                        display as link
            visible when (CanOverrideIDMDocumentTemplate)
                paragraph
                    PurchaseOrderIDMTemplate
                        select is PurchaseOrderIDMTemplate
                    button of "<PurchaseOrderIDMTemplate.Name>"
                        link is external "<PurchaseOrderIDMTemplate.RetrieveUrl>"
                        display as link
        three column distributed
            visible when (Company.ProcurementGroup.AribaEnabled)
                column1
                    paragraph
                        BlanketPO
                            label is "BlanketP\\O"
                        LegacyPO
                            label is "LegacyP\\O"
                        Confirming
            column2
                QuoteNumber
                    label is "QuoteNumber"
        header2 of "Terms"
        three column distributed
            column1
                paragraph
                    ProcessLevel
                        display as required when (ProcessLevelRequired)
                    ProcessLevel.Name
                        no label
                        display as text
            column2
                paragraph
                    TermCode
                    TermCode.Description.Desc[1]
                        no label
                        display as text
                    TermCode.Description.Desc[2]
                        no label
                        display as text
            column3
                paragraph
                    StandardCommentCode
                        label is "CommentCode"
                    StandardCommentCode.Description
                        no label
                        display as text
        display as text
            three column distributed
                TermCode.FirstNetDays
                    label is "DueDays"
                TermCode.TermsDiscountArray.TermsDiscountGroup[1].DaysToCalcDiscount
                    label is "DiscountDays"
                TermCode.TermsDiscountArray.TermsDiscountGroup[1].DiscountPercent
                    label is "DiscountRatePercent"
        three column distributed
            ShipToArriveDate
            LetterOfCredit
            InvoiceMethod
        three column distributed
            UseProcurementCard
            ProcurementCardNumber
        header2 of "Global"
        three column distributed
            paragraph
                NatureOfTransactionCode
                    display as required when (NatureOfTransactionCodeRequired)
                NatureOfTransactionCode.Description
                    no label
                    display as text
            paragraph
                StatisticalProcedure
                StatisticalProcedure.Description
                    no label
                    display as text
            paragraph
                GlobalDocumentType
                GlobalDocumentType.Description
                    no label
                    display as text
        header2 of "GrantAccounting"
        single column
            SubcontractorPurchaseOrder
