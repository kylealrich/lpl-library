MainForm is a Form
    Layout
        two column distributed
            visible when (not RecordExists)
                column1
                    paragraph
                        CashCode
                        CashCode.Description
                            no label
                            display as text
                        CashCode.Currency
                            label is "Currency"
                            display as text
                    paragraph
                        Company.OrigCompany
                            label is "Company"
                            select is Company
                        Company.OrigCompany.Name
                            no label
                            display as text
                        Company.OrigCompany.Currency
                            label is "Currency"
                            display as text
                    paragraph
                        CurrencyTable
                        CurrencyTable.Description
                            no label
                            display as text
                column2
                    paragraph
                        CashLedgerElectronicFundsTransferTransaction.BankTransactionCode
                            label is "TransactionCode"
                            select is BankCreditTransactionCodes
                        CashLedgerElectronicFundsTransferTransaction.BankTransactionCode.Description
                            no label
                            display as text
                    paragraph
                        Reference
                            label is "ReferenceNumber"
                        Status
                            label is "Status"
                            display as text
                        visible when (VoidDate entered)
                            VoidDate
                                label is "RejectDate"
                                display as text
                    paragraph
                        ReceiptAmountUnsigned
                            label is "Amount"
                        visible when (IsUnreleased)
                            AppliedBankAmount
                                label is "AppliedAmount"
                                display as text
                            BalanceAmount
                                label is "Balance"
                                display as text
                        visible when (IsBatchApproved)
                            CashLedgerBatchApproval
            visible when (UnreleasedRecordExists)
                column1
                    paragraph
                        Company.OrigCompany
                            label is "Company"
                            select is Company
                        Company.OrigCompany.Name
                            no label
                            display as text
                        Company.OrigCompany.Currency
                            label is "Currency"
                            display as text
                    paragraph
                        CurrencyTable
                        CurrencyTable.Description
                            no label
                            display as text
                column2
                    paragraph
                        Reference
                            label is "ReferenceNumber"
                        Status
                            label is "Status"
                        visible when (VoidDate entered)
                            VoidDate
                                label is "RejectDate"
                    paragraph
                        ReceiptAmountUnsigned
                            label is "Amount"
                        visible when (IsUnreleased)
                            display as text
                                AppliedBankAmount
                                    label is "AppliedAmount"
                                BalanceAmount
                                    label is "Balance"
                        visible when (IsBatchApproved)
                            CashLedgerBatchApproval
        two column distributed
            column1
                TransactionDate
                TransactionType
                BankEntity
                    label is "BankIdentification"
                    select is Banks
                BankAccountValidationType
                    label is "AccountValidationType"
                ConfirmationNumber
                paragraph
                    GeneralLedgerSourceCode
                        label is "EventCode"
                    GeneralLedgerSourceCode.Description
                        no label
                        display as text
                ApprovalCostCenter
                paragraph
                    CashLedgerProcessGroup
                    CashLedgerProcessGroup.Description
                        no label
                        display as text
            column2
                Description
                CustomerName
                    label is "CustomerReference"
                BankAccountNumber
                    label is "AccountNumber"
                paragraph
                    BankAccountType
                        label is "AccountType"
                    GlobalBankAccountType
                RIBKey
                ACHPrenotification
                    label is "PrenotificationStatus"
                ApprovalCategory
                EFTProcessingHold
                    label is "ProcessingHold"
        paragraph
            visible when (HasAttachment)
                EFTTransferAttachment.Title
            EFTTransferAttachment.File
        paragraph
            CommentText
                use text area of 5 lines
