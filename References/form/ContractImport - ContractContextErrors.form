ContractContextErrors is a Form
    title is "ContractInterface"
    Actions
        action is CleanUpLineErrors
        action is refresh
    Layout
        display as text
            paragraph
                ContractGroup
                ContractGroup.ProcurementGroup.Description
                    no label
            paragraph
                ContractImport
                    label is "ContractInterface"
                Name
                    no label
            paragraph
                Supplier
                    label is "Supplier"
                Supplier.SupplierName
                    no label
                SupplierSourceId
                    label is "SupplierContact"
                SupplierSourceId.MainContact.FirstAndLastName
                    no label
            paragraph
                text of "Run_'Clean_Up_Line_Errors'_AfterFixingErrors"
                    bold
                    color of green
