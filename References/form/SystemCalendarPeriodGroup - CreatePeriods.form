CreatePeriods is an ActionForm
    action is CreatePeriods
    Layout
        single column
            Year
            PeriodFrequency
            visible when (PeriodFrequency.Weekly)
                WeeklyOption
            visible when (WeeklyOption.ISO)
                ISOExplanation
                    no label
                    display as text
            visible when (WeeklyOption.Excel1)
                Excel1Explanation
                    no label
                    display as text
            visible when (WeeklyOption.Excel2)
                Excel2Explanation
                    no label
                    display as text
            visible when (WeeklyOption.Simple)
                SimpleNumberingExplanation
                    no label
                    display as text
            visible when (not PeriodFrequency.Weekly)
                BeginningDate
            PeriodNameTemplate
