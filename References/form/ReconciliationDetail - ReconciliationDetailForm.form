ReconciliationDetailForm is a CompositeForm
    is primary
    propagate as a drill
    title is "<DetailType>"
    context form is ReconciliationDetailContextForm
        background is theme color
    Actions
        action is BuildAmortizationSchedule
            hide when invalid
        action is DeleteAmortizationSchedule
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is CreatePeriodDetail
            action icon is create
            label is "_"
            mouse over text is "CreatePeriodDetail"
            hide when invalid
        action is CreateReconciliationDetail
            action icon is create
            label is "_"
            mouse over text is "CreateReconciliationDetail"
            hide when invalid
        action is CreateReconcilingItem
            action icon is create
            label is "_"
            mouse over text is "CreateReconcilingItem"
            hide when invalid
        action is CreateAmortization
            action icon is create
            label is "_"
            mouse over text is "CreateAmortization"
            hide when invalid
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
    Main is a Panel
        form is ReconciliationDetailContextOverview
    PeriodDetails is a Panel
        visible when (not DetailType.Amortization)
        list is ReconciliationPeriodDetail set.ReconciliationPeriodDetailList
    AmortizationDetails is a Panel
        visible when (CanViewAmortizationDetails)
        list is ReconciliationPeriodDetail set.AmortizationDetailList
    CommentsAndAttachments is a Panel
        list is ReconciliationDetailComment set.ReconciliationDetailCommentList
