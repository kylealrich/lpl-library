IntercompanyBillingForm is a Form
    Layout
        header2 of "DefaultsForBillingDocuments"
        four column distributed
            column1
                paragraph
                    ICBillingDefaultProcessLevel
                        label is "ProcessLevel"
                    ICBillingDefaultProcessLevel.Name
                        no label
                        display as text
                paragraph
                    ICBillingDefaultCustomer
                        label is "Customer"
                        select is CustomerContextCompanyCustomerSelectList
                    ICBillingDefaultCustomer.Name
                        no label
                        display as text
                paragraph
                    ApprovalCode
                        select is ApprovalCodesWithLevels
                        show up to 10 characters
                    ApprovalCode.Description
                        no label
                        display as text
            column2
                IntercompanyBillingInvoice
                    label is "BillingInvoiceTemplate"
                paragraph
                    ICBillingDefaultCreditMemoReason
                        label is "CreditMemoReasonCode"
                        select is ReceivableReasonCodeMemoList
                    ICBillingDefaultCreditMemoReason.Description
                        no label
                        display as text
            column3
                paragraph
                    ICBillingInvoicePrefix
                        label is "InvoicePrefix"
                    DerivedICBillingInvoiceNumber
                        label is "LastInvoice"
                        display as text
                        display zero
                    visible when (ICBillingDefaultProcessLevel entered)
                        button of "Change"
                            action is ChangeICBillingInvoiceNumber
                            display as link
                paragraph
                    ICBillingCreditMemoPrefix
                        label is "CreditMemoPrefix"
                    DerivedICBillingCreditMemoNumber
                        label is "LastCreditMemo"
                        display as text
                        display zero
                    visible when (ICBillingDefaultProcessLevel entered)
                        button of "Change"
                            action is ChangeICBillingCreditMemoNumber
                            display as link
            column4
                UseBillFromFunctionalCurrency
                    label is "RequireReceivableCompanyCurrency"
                InterfaceUnreleasedInvoices
        header2 of "DefaultsForSettlements"
        two column
            column1
                paragraph
                    ICBillingDefaultCashCode
                        label is "CashCode"
                    ICBillingDefaultCashCode.Description
                        no label
                        display as text
                paragraph
                    ICBillingDefaultBankTransactionCode
                        label is "BankTransactionCode"
                    ICBillingDefaultBankTransactionCode.Description
                        no label
                        display as text
            column2
                paragraph
                    ICBillingDefaultBankFeeCode
                        label is "BankFeeCode"
                    ICBillingDefaultBankFeeCode.Description
                        no label
                        display as text
                paragraph
                    ICBillingReverseBankFeeCode
                        label is "ReverseBankFeeCode"
                    ICBillingReverseBankFeeCode.Description
                        no label
                        display as text
        header2 of "IDMOptions"
        paragraph
            IntercompanyBillingInvoiceFromEmailAddress
            IntercompanyBillingInvoiceEmailRecipient
        paragraph
            BillingInvoiceIDMTemplate
                select is IntercompanyBillingInvoiceTemplate
            button of "<BillingInvoiceIDMTemplate.Name>"
                link is external "<BillingInvoiceIDMTemplate.RetrieveUrl>"
                display as link
            IntercompanyBillingInvoiceEmailTemplate
                select is IntercompanyBillingInvoiceIDMEmailTemplate
            button of "<IntercompanyBillingInvoiceEmailTemplate.Name>"
                link is external "<IntercompanyBillingInvoiceEmailTemplate.RetrieveUrl>"
                display as link
        paragraph
            IntercompanyBillingInvoiceEmailSubject
            visible when (IntercompanyBillingInvoiceEmailSubject entered)
                text of "Sample:<DerivedIntercompanyBillingInvoiceEmailSubject>"
