IntercompanyBillingDocumentProcessFlowForm is a CompositeForm
    title is "IntercompanyBillingDocument<IntercompanyBillingDocumentHeader>"
    show panel control on left
    restrict action AddToSettlement
    Main is a Panel
        form is IntercompanyBillingDocumentContextForm
    Lines is a Panel
        list is IntercompanyBillingDocumentLine set.primary
    Comments is a Panel
        list is IntercompanyBillingDocumentComment set.primary
    Attachments is a Panel
        list is IntercompanyBillingDocumentAttachment set.primary
    ApprovalInformation is a DashBoardPanel
        title is "ApprovalHistory"
        visible when (DisplayApprovalInformationPanel)
        show 4 columns
        Progress is a Panel
            visible when (RequiresApproval)
            triple width
            form is ProcessIndicatorForm
        History is a Panel
            visible when (IsSingleApprovalHistory)
            list is IntercompanyBillingDocumentApprovalHistoryRel.ICBDocumentApprovalHistoryCardList
        PayablesProgress is a Panel
            visible when (IsPayablesAndReceivablesApproval)
            triple width
            form is ProcessIndicatorForm
        PayablesHistory is a Panel
            visible when (IsPayablesAndReceivablesApprovalHistory)
            list is IntercompanyBillingDocumentApprovalHistoryRel.ICBDocumentApprovalHistoryCardList
    ApprovalHistory is a Panel
        visible when (DisplayApprovalTrackingPanel)
        list is IntercompanyBillingDocumentApprovalHistoryRel.primary
    PayablesApprovalHistory is a Panel
        title is "PayablesApprovalHistory"
        visible when (PayablesApprovalTrackingPanel)
        list is IntercompanyBillingDocumentApprovalHistoryRel.primary
