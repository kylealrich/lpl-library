UpdateSupplier is a Form
    title is "SupplierRegistration-CompanyInformation"
    Layout
        single column
            Supplier.SupplierName
                label is "CompanyName"
            Supplier.DoingBusinessAs
        two column
            Supplier.DandBNbr
                label is "Dun&Bradstreet"
            Supplier.BusinessType
        two column
            Supplier.TaxIdGroup.TaxIdType
            visible when (Supplier.ChangeTaxID)
                Supplier.TaxIdGroup.TaxId
            visible when (not Supplier.ChangeTaxID)
                ChangeTaxID
        two column
            Supplier.VATRegistrationCountry
            Supplier.VATRegistrationNumber
        two column
            visible when (SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                Supplier.GlobalLocationNumber
                    label is "GlobalLocationNumber"
            Supplier.WebAddress
                label is "Website"
        header3 of "AddressInformation"
        two column
            blank line
            blank line
            blank line
            text of "MailingAddress"
            Supplier.MailingAddress.DeliveryAddress.AddressLine1
            Supplier.MailingAddress.DeliveryAddress.AddressLine2
            Supplier.MailingAddress.DeliveryAddress.AddressLine3
            Supplier.MailingAddress.DeliveryAddress.AddressLine4
            Supplier.MailingAddress.Municipality
                label is "City"
            Supplier.MailingAddress.StateProvince
                label is "State"
            Supplier.MailingAddress.PostalCode
            Supplier.MailingAddress.County
            Supplier.MailingAddress.Country
            text of "RemitToNameAndAddress"
            Supplier.BillingFirstName
                label is "RemitToFirstName"
            Supplier.BillingLastName
                label is "RemitToLastName"
            Supplier.SameAsAddressAbove
                label is "CheckIfRemitToAddressIsTheSameAsMailingAddress"
            Supplier.BillingAddress.DeliveryAddress.AddressLine1
            Supplier.BillingAddress.DeliveryAddress.AddressLine2
            Supplier.BillingAddress.DeliveryAddress.AddressLine3
            Supplier.BillingAddress.DeliveryAddress.AddressLine4
            Supplier.BillingAddress.Municipality
                label is "City"
            Supplier.BillingAddress.StateProvince
                label is "State"
            Supplier.BillingAddress.PostalCode
            Supplier.BillingAddress.County
            Supplier.BillingAddress.Country
