MobileReceivablePaymentContextForm is a Form
    title is "ReceivablePayment"
    Layout
        display as text
            paragraph
                Company
                DerivedStatus
                    label is "Status"
            single column
                Company.Name
                    no label
                    display as text
            two column
                ReceivablePaymentHeader
                ReceivablePayment
        two column
            visible when (not IsCompanyCurrency)
            display as text
                paragraph
                    OriginalCurrency
                        label is "Currency"
                paragraph
                    CurrencyRate
                        no label
