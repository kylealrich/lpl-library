Main is a Form
    title is "DetailInformation"
    Layout
        four column table
            column1
                paragraph
                    visible when (StudentRecord entered)
                        StudentActivitySchool
                            label is "School"
                            display only
                            initial value is StudentRecord.StudentActivitySchool
                    visible when (StudentRecord not entered)
                        StudentActivitySchool
                            label is "School"
                            select is SchoolSelectList
                paragraph
                    visible when (not ReceiptExists)
                        CurrentReceiptNumber
                            label is "Receipt"
                            display as text
                        visible when (StudentActivitySchool.AllowReceiptNumberOverride)
                            StudentActivityReceipt
                                label is "OverrideReceiptNumber"
                        visible when (StudentActivitySchool not entered)
                            StudentActivityReceipt
                                label is "OverrideReceiptNumber"
                    visible when (ReceiptExists)
                        StudentActivityReceipt
                            label is "Receipt"
                        visible when (CreatedFromBatch)
                            StudentActivityReceiptBatch
                                label is "BatchNumber"
                                display as text
                paragraph
                    ReceiptAmount
                paragraph
                    NSFRepayment
                visible when (LinkedToDeposit)
                    paragraph
                        StudentActivityBankAccount
                            label is "BankAccount"
                            display as text
                visible when (not ReceiptExists)
                    visible when (not NSFRepayment)
                        paragraph
                            SchoolActivityAccount
                                label is "Activity"
                                compact format
                                select is SchoolActivityNonAssetAccountSelectList
                visible when (not ReceiptExists)
                    visible when (not NSFRepayment)
                        paragraph
                            Amount
            column2
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    visible when (ReceiptExists)
                        Status
                            display as text
                paragraph
                    ReceiptDate
                paragraph
                    SchoolAccountCode
                        compact format
                        select is ReceiptAccountCodeList
                visible when (LinkedToDeposit)
                    paragraph
                        StudentActivityBankTransaction
                            label is "DepositNumber"
                            display as text
                        StudentActivityBankTransaction.TransactionDate
                            label is "DepositDate"
                            display as text
                visible when (not ReceiptExists)
                    visible when (not NSFRepayment)
                        paragraph
                            SchoolActivityAccount.Description
                                no label
                                display as text
            column3
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                paragraph
                    visible when (ReceiptExists)
                        visible when (not Status.Entered)
                            button of "PrintReceipt"
                                link is PrintActivityReceipt
                                align as label
                paragraph
                    ReferenceNumber
                paragraph
                    SchoolAccountCode.StudentActivityAccountCode.Description
                        no label
                        display as text
                visible when (LinkedToDeposit)
                    visible when (Status.Returned)
                        paragraph
                            ReturnNumber
                                display as text
                            ReturnDate
                                display as text
            column4
                blank line
                visible when (EnteredReceipt)
                    paragraph
                        TotalDetailAmount
                            display as text
                        visible when (OutOfBalance)
                            OutOfBalanceAmount
                                display as text
        paragraph
            Description
                use text area of 3 lines
        paragraph
            StudentRecord
                label is "StudentId"
                select is StudentBySchoolList
            DerivedName
                no label
                display as text
        paragraph
            StudentActivityClubSponsor
                label is "ClubSponsor"
