MPCardCardholderContext is a Form
    title is "PCardCardholderContext"
    Layout
        two column distributed
            ProcurementGroup
                display as text
            ProcurementGroup.Description
                no label
                display as text
        two column distributed
            ProcurementCardProgram
                label is "Program"
                display as text
            ProcurementCardProgram.Description
                display as text
        single column
            visible when (not Status.New)
                visible when (not ProcurementCardProgram.MaskProcurementCardNumberEntry)
                    ProcurementCardNumber
                        label is "CardNumber"
                visible when (ProcurementCardProgram.MaskProcurementCardNumberEntry)
                    ProcurementCardNumber
                        label is "CardNumber"
                        hidden entry
        three column distributed
            ProcurementCardRequest
                label is "Request"
                display as text
            Status
                display as text
            UserId
                label is "RequestedBy"
                display as text
        two column distributed
            visible when (not Status.New)
                ProcurementCardRequestEffectiveDate
                    label is "EffectiveDate"
            visible when (not Status.New)
                ProcurementCardRequestExpirationDate
                    label is "ExpirationDate"
