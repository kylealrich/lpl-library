PurchasingVendorInfo is a Form
    Layout
        display as text
            two column distributed
                column1
                    visible when (PurchasingVendorContactDetailsExists)
                        PurchasingVendorRel.ContactName
                        paragraph
                            button of icon.phone
                                link is "tel:<PurchasingVendorRel.PhoneNumber.SubscriberNumber>"
                            button of "<PurchasingVendorRel.PhoneNumber.SubscriberNumber>"
                                link is "tel:<PurchasingVendorRel.PhoneNumber.SubscriberNumber>"
                                display as link
                        paragraph
                            button of icon.mail
                                link is "mailto:<PurchasingVendorRel.EmailAddress>"
                            button of "<PurchasingVendorRel.EmailAddress>"
                                link is "mailto:<PurchasingVendorRel.EmailAddress>"
                                display as link
                column2
                    DerivedPOAccountNumber
                        label is "AccountNumber"
