IIHRuleConfigurationForm is a Form
    is primary
    propagate as a drill
    title is "Configuration"
    restrict action SpecialistCreate
    restrict action SpecialistUpdate
    restrict action UpdateRules
    Actions
        navigation is ReturnToRules
            action icon is undo
        action is save
        action is save and new
        action is Create
    Layout
        paragraph
            IIHRule
                label is "RuleID"
                display as text
            IIHRuleType
                label is "ConfigurationType"
                display as text
        paragraph
            RuleName
            visible when (RuleOrder entered)
                RuleOrder
                    display as text
            Active
        paragraph
            InventoryCompany
                label is "Company"
                select is InventoryCompanyList
            InventoryCompany.Name
                no label
                display as text
        paragraph
            visible when (ShowAllLocations)
                InventoryLocation
                    label is "Location"
                    select is AllActiveLocations
            visible when (ShowOnlyPerpetualLocations)
                InventoryLocation
                    label is "Location"
            visible when (ShowOnlyParLocations)
                InventoryLocation
                    label is "Location"
                    select is ParAndExchangeCartLocationsSelect
            InventoryLocation.Name
                no label
                display as text
        paragraph
            visible when (not ExclusionTypeRule)
                TransientPrimaryReplenishment
                    no label
                    display as horizontal radio buttons
        paragraph
            visible when (TransientPrimaryReplenishment.Vendor)
                ItemGroup
                    label is "VendorGroup"
                Vendor
                Vendor.VendorName
                    no label
                    display as text
        paragraph
            visible when (TransientPrimaryReplenishment.InventoryLocation)
                SourceCompany
                SourceLocation
                SourceLocation.Name
                    no label
                    display as text
        paragraph
            visible when (ExclusionTypeRule)
                ItemRule
                    label is "Item"
        paragraph
            visible when (not ExclusionTypeRule)
                ItemRule
                    label is "Item"
                MajorInventoryClassRule
                    label is "MajorInventoryClass"
        paragraph
            visible when (ItemRule)
                ItemGroup
                    display as required
                Item
                Item.Description
                    no label
                    display as text
                visible when (MajorInventoryClassRule)
                    MajorInventoryClass
                        show up to 10 characters
                        display as required
            visible when (MajorInventoryClassRule)
                visible when (not ItemRule)
                    ItemGroup
                        display as required
                    MajorInventoryClass
                        select is ActiveMajorInventoryClasses
                        show up to 10 characters
                        display as required
        visible when (IIHRuleType.OptimizationMethod)
            blank line
            header2 of "PerpetualOrderPolicyParameters"
            single column
                paragraph
                    MaxModel
                        label is "MaxAndFixedOrderInventoryPolicy"
                    visible when (MaxModel.CurrentGap)
                        text of "MaintainCurrentOrderFrequency"
                    visible when (MaxModel.OrderFrequency)
                        text of "MaintainSpecificOrderFrequency"
                visible when (MaxModel.OrderFrequency)
                    paragraph
                        MaxParameter
                            label is "OrderFrequency"
                        text of "days"
                            align as label
        visible when (IIHRuleType.Cutoff)
            blank line
            header2 of "LowerAndUpperBounds"
            paragraph
                RecommendationCutoffRange.MinimumCutoff
                    label is "LowerBound"
                RecommendationCutoffRange.MaximumCutoff
                    label is "UpperBound"
                RecommendationCutoffValueType
                    no label
                    display as radio buttons
        visible when (IIHRuleType.ServiceLevel)
            blank line
            header2 of "ServiceLevelParameters"
            paragraph
                ServiceLevel
        visible when (IIHRuleType.LeadTime)
            blank line
            header2 of "LeadTimeParameters"
            paragraph
                VendorSourceDefaultLeadTime
                    label is "DefaultLeadTime"
                text of "days"
                    align as label
        visible when (IIHRuleType.OrderDays)
            blank line
            header2 of "OrderDaysSchedule"
            paragraph
                text of "OrderOn"
                Schedule.Sunday
                Schedule.Monday
                Schedule.Tuesday
                Schedule.Wednesday
                Schedule.Thursday
                Schedule.Friday
                Schedule.Saturday
            paragraph
                Frequency
                    label is "Every"
                text of "week(s)"
        visible when (IIHRuleType.ReceivingDays)
            blank line
            header2 of "ReceivingDaysSchedule"
            paragraph
                ReceivingSchedule
                    display as horizontal radio buttons
        visible when (IIHRuleType.ParTargetDays)
            blank line
            header2 of "ParTargetDaysParameters"
            paragraph
                TargetDaysRange.LowerBound
                    display as text
                TargetDaysBetweenOrders
                visible when (not NonDefaultParTargetDayRule)
                    text of "(ValidValue1-7)"
                TargetDaysRange.SemiWeeklySchedule
                    display as text
                HighThreshold
                visible when (not NonDefaultParTargetDayRule)
                    text of "(ValidValue1-7)"
                TargetDaysRange.UpperBound
                    display as text
