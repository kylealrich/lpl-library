Main is a Form
    Layout
        visible when (not RecordExists)
            two column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        OrderEntryOrderType
                            label is "OrderType"
                            display as required
                        OrderEntryOrderType.Description
                            no label
                            display as text
                    paragraph
                        visible when (Company.ManuallyNumbered)
                            CustomerOrder
                                label is "Order"
                                display as required
                    paragraph
                        InventoryLocation
                            label is "Location"
                        InventoryLocation.Name
                            no label
                            display as text
                    paragraph
                        BillingProcessLevel
                            label is "ProcessLevel"
                        BillingProcessLevel.Name
                            no label
                            display as text
                column2
                    paragraph
                        Currency
                        Currency.Description
                            no label
                            display as text
                    paragraph
                        Status
                            display as text
                        visible when (OnProformaPaymentHold)
                            text of "RequiredProformaPayment"
                                bold
                    visible when (HasProformaInvoice)
                        button of "<DerivedProformaInvoice>"
                            view ProformaInvoiceRel.Attachment.File
                            label is "ProformaInvoice"
                            left align
        visible when (RecordExists)
            two column distributed
                column1
                    paragraph
                        OrderEntryOrderType
                            label is "OrderType"
                        OrderEntryOrderType.Description
                            no label
                            display as text
                    paragraph
                        InventoryLocation
                            label is "Location"
                        InventoryLocation.Name
                            no label
                            display as text
                    paragraph
                        BillingProcessLevel
                            label is "ProcessLevel"
                        BillingProcessLevel.Name
                            no label
                            display as text
                column2
                    paragraph
                        Currency
                        Currency.Description
                            no label
                            display as text
        two column distributed
            column1
                paragraph
                    Customer
                        select is CustomerContextCompanySelectList
                    Customer.Name
                        no label
                        display as text
                paragraph
                    CustomerBillTo
                        label is "BillTo"
                    CustomerBillTo.Name
                        no label
                        display as text
                paragraph
                    CustomerShipTo
                        label is "ShipTo"
                    CustomerShipTo.Name
                        no label
                        display as text
                paragraph
                    visible when (IsReleased)
                        OrderCancelCreditReason
                            label is "CancelReason"
                        OrderCancelCreditReason.Description
                            no label
                            display as text
            column2
                paragraph
                    RequestedDate
                        label is "RequestedDate"
                paragraph
                    ExpectedShipDate
                        label is "ExpectedShipDate"
                paragraph
                    OrderDate
                paragraph
                    visible when (IsReleased)
                        CancelledDate
        two column distributed
            column1
                header2 of "Tax"
                TaxStatus
                visible when (TaxStatus.Taxable)
                    TaxDate
                        label is "Date"
                    TaxCode
                        display as required
                visible when (TaxEntityUsesSabrix)
                    PointOfTitleTransfer
                visible when (TaxOutputDueAccount)
                    paragraph
                        EntityTaxCodeRel.TaxOutputDueAccount
                            label is "TaxAccount"
                            display only
                            compact format
                visible when (TaxOutputAccount)
                    paragraph
                        EntityTaxCodeRel.TaxOutputAccount
                            label is "TaxAccount"
                            display only
                            compact format
            column2
                header2 of "Billing"
                EnteredDiscount
                    label is "AdditionalDiscount"
                paragraph
                    CurrencyRate
                        label is "ConversionRate"
        two column distributed
            column1
                header2 of "SalesRepresentative"
                paragraph
                    Territory
                    Territory.Description
                        no label
                        display as text
                paragraph
                    SalesRepresentative
                        label is "SalesRepresentative1"
                    SalesRepresentative.Name
                        no label
                        display as text
                paragraph
                    visible when (SalesRepresentative entered)
                        CommissionRate1
                            label is "Commission"
                paragraph
                    SalesRepresentative2
                        label is "SalesRepresentative2"
                    SalesRepresentative2.Name
                        no label
                        display as text
                paragraph
                    visible when (SalesRepresentative2 entered)
                        CommissionRate2
                            label is "Commission"
                paragraph
                    CommissionSplitPercentage
                        label is "SplitPercentage"
            column2
                header2 of "Global"
                NatureOfTransactionCode
                    label is "NatureOfTransactionCode"
                StatisticalProcedure
                VATRegistrationNumber
                GlobalDocumentType
                    label is "DocumentType"
                CertificationNumber
                CertificationDate
        single column
            visible when (Company.UseIDM)
                header2 of "Printer"
                paragraph
                    IDMPrinter
                    IDMPrinter.Description
                        no label
                        display as text
