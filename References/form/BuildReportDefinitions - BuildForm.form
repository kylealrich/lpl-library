BuildForm is an ActionForm
    action is Build
    title is "BuildOrRebuildReportDefinitions"
    Layout
        single column
            BuildOptions
                display as horizontal radio buttons
            visible when (BuildOptions.StandardUpdate)
                text of "Standard_Update_should_be_used_when_new_reports_have_been_added_but_are_not_visible_in_the_report_catalog."
                text of "This_action_will_not_affect_changes_made_to_Report_Definition_records."
            visible when (BuildOptions.ForceUpdate)
                text of "Force_Update_should_be_used_to_overwrite_the_existing_Report_Definitions_with_delivered_data."
            visible when (BuildOptions.FullRebuild)
                RebuildSubCategories
                text of "Full_Rebuild_should_be_used_to_delete_all_Report_Definitions,_excluding_EPM_and_WFM,_and_rebuild_them."
            visible when (not BuildOptions.StandardUpdate)
                text of "Caution:_Running_a_Force_Update_or_Full_Rebuild_will_delete_changes_made_to_Report_Definition_records."
                    color of red
