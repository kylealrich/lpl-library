TransferWizardSummary is a Form
    title is "AssetTransfer"
    Layout
        blank line
        blank line
        display as text
            paragraph
                Company
                Company.GeneralLedgerCompany.Name
                    no label
            paragraph
                Asset
                Asset.Description
                    no label
            paragraph
                AssetTransfer
                    display as text
            paragraph
                Asset.TagNumber
            paragraph
                Asset.DerivedStatus
            blank line
            two column
                TransferDate
                TransferQuantity
        blank line
        single column
            button of "ReleaseTransfer"
                valid when (Asset.ApprovalReleaseTransferVisible)
                action is AssetReleaseTransfer
            blank line
            button of "ResetTransfer"
                valid when (Asset.ApprovalUnreleasedAssetTransferExists)
                action is AssetResetTransfer
            blank line
            button of "SubmitForApproval"
                valid when (Asset.SubmitForApprovalValid)
                action is SubmitForApproval
            blank line
            button of "GoToAsset"
                link is AssetLink
