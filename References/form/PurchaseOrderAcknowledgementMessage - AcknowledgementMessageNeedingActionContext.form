AcknowledgementMessageNeedingActionContext is a Form
    Layout
        four column distributed
            column1
                display as text
                    paragraph
                        PurchaseOrderCompanyRel.RepresentativeText
                            label is "Company"
                    paragraph
                        PurchaseOrder
                        PurchaseOrderLine
                            label is "Line"
                        PurchaseOrderRevision
                            label is "Revision"
                    paragraph
                        PurchaseOrderRevisionRel.AcknowledgementDate
                            label is "AcknowledgementDate"
            column2
                display as text
                    PurchaseOrderRel.Vendor.RepresentativeText
                    PurchaseOrderRel.Buyer.RepresentativeText
                        label is "Buyer"
                    EmployeeRel.DerivedEmployeeIDName
                        label is "Processor"
            column3
                display as text
                    PurchaseOrderRel.PurchaseOrderDate
                    PurchaseOrderLineRel.EarlyDeliveryDate
                        label is "DeliveryDate"
                    PurchaseOrderRel.MobileTotalWithCurrencyDisplay
                        label is "PurchaseOrderTotal"
            column4
                display as text
                    PurchaseOrderRel.DerivedPurchaseOrderStatus
                        label is "POStatus"
                    PurchaseOrderLineRel.DerivedStatus
                        label is "LineStatus"
