RemittanceSelectionForm is a Form
    Layout
        three column distributed
            column1
                visible when (not CustomerDraftRemittanceExists)
                    paragraph
                        Company
                            label is "RemittanceCompany"
                        Company.Name
                            no label
                            display as text
                        Company.Currency
                            no label
                            display as text
                visible when (CustomerDraftRemittanceExists)
                    paragraph
                        RepresentativeText
                            label is "RemittanceCompany"
                            display as text
                        Company.Currency
                            no label
                            display as text
            column2
                RemitAmount
                    display as text
            column3
                visible when (not CustomerDraftRemittanceExists)
                    CustomerDraftRemittance.ProcessLevel
                        label is "ProcessLevel"
                visible when (CustomerDraftRemittanceExists)
                    CustomerDraftRemittance.ProcessLevel
                        label is "ProcessLevel"
                        display as text
        three column distributed
            column1
                visible when (not CustomerDraftRemittanceExists)
                    paragraph
                        CustomerDraftRemittance.CashCode
                        CustomerDraftRemittance.CashCode.Description
                            no label
                            display as text
                visible when (CustomerDraftRemittanceExists)
                    paragraph
                        CashCodeText
                            display as text
            column2
                paragraph
                    BankTransactionCode
                    BankTransactionCode.Description
                        no label
                        display as text
            column3
                visible when (not CustomerDraftRemittanceExists)
                    paragraph
                        CustomerDraftRemittance.RemitType
                            label is "RemittanceType"
                visible when (CustomerDraftRemittanceExists)
                    paragraph
                        CustomerDraftRemittance.RemitType
                            label is "RemittanceType"
                            display as text
