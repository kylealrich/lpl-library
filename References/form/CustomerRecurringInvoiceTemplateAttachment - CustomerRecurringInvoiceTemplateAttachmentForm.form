CustomerRecurringInvoiceTemplateAttachmentForm is a Form
    is primary
    title is "CustomerRecurringInvoiceTemplateAttachment"
    Layout
        three column distributed
            column1
                Company
                    display as text
            column2
                RecurringInvoiceTemplate
                    display as text
            column3
                Customer
                    display as text
        paragraph
            CustomerRecurringInvoiceTemplateAttachment
                label is "AttachmentNumber"
                display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
