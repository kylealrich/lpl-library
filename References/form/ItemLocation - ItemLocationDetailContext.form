ItemLocationDetailContext is a Form
    Layout
        three column distributed
            column1
                visible when (not ItemLocationRecordExists)
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                visible when (ItemLocationRecordExists)
                    Company.DerivedCompanyDisplay
                        label is "Company"
                        display as text
                visible when (not BinGroupDetailExists)
                    paragraph
                        Item
                            show up to 10 characters
                        Item.Description
                            no label
                            display as text
                visible when (BinGroupDetailExists)
                    Item.RepresentativeText
                        display as text
            column2
                visible when (not ItemLocationRecordExists)
                    paragraph
                        InventoryLocation
                            label is "Location"
                            select is ParAndExchangeCartLocationsSelect
                            show up to 15 characters
                        InventoryLocation.Name
                            no label
                            display as text
                visible when (ItemLocationRecordExists)
                    InventoryLocation.RepresentativeText
                        label is "Location"
                        display as text
                InventoryLocation.LocationType
                    display as text
            column3
                InventoryLocation.OneSourceDocumentToOnePO
                    label is "SingleDocumentToAPurchaseOrder"
                    display as text
                InventoryLocation.Status
                    display as tag
                        color of gray when (InventoryLocation.Status.AddInactive)
                        color of green when (InventoryLocation.Status.Active)
                        color of red when (InventoryLocation.Status.Inactive)
