    title is "AgingCode"
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            AgingCode
            Description
                no label
        single column
            Active
            AgeCreditsRule
            AgePaymentsRule
            AgeDisputesRule
            AgingMethod
            paragraph
                AgingPeriods.AgePeriods[1]
                    label is "AgePeriods"
                AgingPeriods.AgePeriods[2]
                    no label
                AgingPeriods.AgePeriods[3]
                    no label
                AgingPeriods.AgePeriods[4]
                    no label
                CurrentAgingPeriod
                    label is "CurrentDays"
            visible when (ExpandedAgingPeriods)
                paragraph
                    AgingPeriods.AgePeriods[5]
                        label is "AgePeriods"
                    AgingPeriods.AgePeriods[6]
                        no label
                    AgingPeriods.AgePeriods[7]
                        no label
                    AgeFuture
                        label is "FutureDays"
            paragraph
                ExpandedAgingPeriods
                    label is "AdditionalAgingPeriods"
