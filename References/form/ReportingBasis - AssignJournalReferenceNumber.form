AssignJournalReferenceNumber is an ActionForm
    action is AssignJournalReferenceNumber
    Layout
        single column
            JournalReferenceLastRunDate
                display as text
            JournalReferenceLastPeriodEndDate
                display as text
            PrmYearOption
            visible when (PrmYearOption.CurrentYear)
                PrmPeriodEndDate
            PrmAccountingEntityOption
            visible when (PrmAccountingEntityOption.Single)
                PrmAccountingEntity
                    select is ReportingBasisPostingAccountingEntityList
