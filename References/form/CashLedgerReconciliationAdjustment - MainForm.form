MainForm is a Form
    Layout
        two column
            ReconciliationData.ExchangeDate
                label is "ReconciledDate"
            PostDate
        blank line
        visible when (ReconciledByBankStatement)
            header3 of "ReconcilingBankStatementInformation"
            paragraph
                ReconcilingBankStatement
                    label is "BankStatement"
                    display as text
                visible when (CanViewBankStatement)
                    button of "ViewStatement"
                        link is BankStatementForm
            single column
                LineMatchField
                    display as text
                MatchNumber
                    display as text
