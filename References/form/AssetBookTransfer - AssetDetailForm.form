AssetDetailForm is a Form
    title is "AssetDetails"
    Layout
        single column
            paragraph
                Asset
                    display as text
                Asset.DerivedStatus
                    label is "Status"
                    display as text
            paragraph
                Asset.Description
                    label is "Description"
                    display as text
            visible when (Asset.LeasedAsset)
                paragraph
                    Asset.AssetLease.LeaseCompany
                        label is "LeaseCompany"
                        display as text
                    Asset.AssetLease.LeaseCompany.Name
                        no label
                        display as text
                paragraph
                    Asset.AssetLease.Lease
                        display as text
                    Asset.AssetLease.Lease.Description
                        no label
                        display as text
            paragraph
                Asset.TagNumber
                    display as text
            paragraph
                AssetTransfer.TransferDate
                    display as text
                AssetTransfer.TransferStatus
                    label is "Status"
                    display as text
            paragraph
                AssetTransfer.CreationDate
                    display as text
                    display date
                AssetTransfer.CreatedBy
                    display as text
            paragraph
                Method
                    display as text
                Method.Description
                    no label
                    display as text
            paragraph
                Life
                    display as text
                LifeRemaining
                    display as text
            paragraph
                InServiceDate
                    display as text
                Convention
                    display as text
