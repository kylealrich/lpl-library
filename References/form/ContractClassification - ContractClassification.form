ContractClassification is a Form
    title is "ContractClassification"
    Layout
        header2 of "ContractLineOptionsForNonServiceItems"
        single column
            RequireCommodityCodeForNonServiceItem
                label is "RequireCommodityCodeForNonServiceItemsOnContractLines"
                left align
            RequireManufacturerCodeForNonServiceItem
                label is "RequireManufacturerCodeForNonServiceItemsOnContractLines"
                left align
            RequireManufacturerNumberForNonServiceItem
                label is "RequireManufacturerNumberForNonServiceItemsOnContractLines"
                left align
            RequireFullDistributionForSpecialItem
                label is "RequireADistributionToBeEnteredForSpecialItems"
                left align
        header2 of "ContractDefaults"
        visible when (UseIDM)
            three column distributed
                column1
                    paragraph
                        ContractDocumentIDMTemplate
                            select is ContractIDMTemplate
                        button of "<ContractDocumentIDMTemplate.Name>"
                            link is external "<ContractDocumentIDMTemplate.RetrieveUrl>"
                                lazy url retrieval
                            display as link
                column2
                    paragraph
                        AddendumDocumentIDMTemplate
                            select is AddendumDocumentIDMTemplate
                        button of "<AddendumDocumentIDMTemplate.Name>"
                            link is external "<AddendumDocumentIDMTemplate.RetrieveUrl>"
                                lazy url retrieval
                            display as link
                column3
                    paragraph
                        visible when (PerformanceEvaluationTemplateExists)
                            PerformanceEvaluationTemplate
                                select is ContractEvaluationTemplates
                            PerformanceEvaluationTemplate.Name
                                no label
                                display as text
        blank line
        visible when (not UseIDM)
            three column distributed
                column1
                    paragraph
                        ContractDocumentTemplate
                        ContractDocumentTemplate.ContractDocumentTemplateGroup.Title
                            no label
                            display as text
                        visible when (HasContractDocumentTemplate)
                            button of "View"
                                view ContractDocumentTemplate.ContractDocumentTemplateGroup.File
                                display as link
                column2
                    paragraph
                        AddendumDocumentTemplate
                        AddendumDocumentTemplate.AddendumDocumentTemplateGroup.Title
                            no label
                            display as text
                        visible when (HasAddendumDocumentTemplate)
                            button of "View"
                                view AddendumDocumentTemplate.AddendumDocumentTemplateGroup.File
                                display as link
                column3
                    paragraph
                        visible when (PerformanceEvaluationTemplateExists)
                            PerformanceEvaluationTemplate
                                select is ContractEvaluationTemplates
                            PerformanceEvaluationTemplate.Name
                                no label
                                display as text
        three column distributed
            SourcingEligible
                label is "EligibleForEventCreation"
            SupplierCanView
            SetActiveLineToAmendment
        three column distributed
            UseForCapitatedContracts
            visible when (SuppliersCanViewAllContracts)
                DoNotDisplayContractsToAll
            visible when (ContractGroup.EnableClinicalSystemUseLocations)
                EnableClinicalSystemUseLocations
        header2 of "ChangeOrderOptions"
        three column distributed
            AllowChangeOrder
            visible when (AllowChangeOrder)
                ChangeOrderAmendmentAddendum
                ChangeOrderChangeLifetimeMaximum
        three column distributed
            visible when (AllowChangeOrder)
                MultipleChangeOrdersAllowed
                ChangeOrderManualUpdates
                ChangeOrderAutoCreateDocument
                ChangeOrderEditBudgets
        header2 of "CostChangeToleranceOptions"
        three column distributed
            ToleranceHandling
            paragraph
                CostChangeTolerancePercent
                Connector
                    label is "And/Or"
                CostChangeToleranceAmount
        two column
            UseForInterface
                label is "DefaultToleranceOptionsToContractInterfaceCostUpdates"
            visible when (UseForInterface)
                text of "InterfaceCostUpdatesOverToleranceWillCreateToleranceErrorRecordsRegardlessOfToleranceHandlingSetting"
                    italics
        header2 of "ContractLineOptionsForServiceItems"
        single column
            RequireCommodityCodeForServiceItem
                label is "RequireCommodityCodeForServiceItemsOnContractLines"
                left align
        header2 of "ContractLineOptionsForAllItemTypes"
        single column
            ShowHealthcareInformation
                label is "ShowHealthcareInformationOnContractLines"
        header2 of "ContractHeaderLifetimeMaximumAmount"
        single column
            AutomaticUpdateHeaderLifetimeMaximumAmount
                label is "AutomaticallyUpdateContractHeaderLifetimeMaximumAmountWhenExceededByLineTotalAndChildContractTotal"
