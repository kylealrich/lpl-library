Question is a Form
    Layout
        paragraph
            SELSupplierQuestion.QuestionText
                label is number
                display as text
            visible when (SELSupplierQuestion.CreatedFromQuestionEntered)
                text of "CreatedFromAnswerToQuestion--<CreatedFromThisPreviousQuestionRel.QuestionText>"
                    italics
                    color of blue
        single column
            visible when (SELSupplierQuestion.HasAttachment)
                SELSupplierQuestion.Attachment.File
                    no label
        single column
            visible when (SELSupplierQuestion.DisplayAnswerRequiredText)
                single column
                    text of "<ConditionalAnswerLabel>"
                        italics
                        color of red
            SELSupplierQuestionAnswer
                label is "<AnswerTextWithRequired>"
        visible when (SELSupplierQuestion.AllowResponseEventLineQuestionAttachment)
            paragraph
                visible when (HasQuestionAnswerAttachment)
                    Attachment.Title
                Attachment.File
                    label is "<SELSupplierQuestion.AttachmentTextWithRequired>"
        visible when (SELSupplierQuestion.AllowResponseAttachment)
            paragraph
                visible when (HasQuestionAnswerAttachment)
                    Attachment.Title
                Attachment.File
                    label is "<SELSupplierQuestion.AttachmentTextWithRequired>"
        blank line
