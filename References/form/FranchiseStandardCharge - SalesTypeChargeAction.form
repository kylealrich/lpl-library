SalesTypeChargeAction is an ActionForm
    action is CreateSalesBasedCharge
    title is "SalesCharge"
    Layout
        paragraph
            Company
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
            Description
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
        paragraph
            Active
        blank line
        three column
            column1
                text of "Options"
                    bold
                Frequency
                ProcessLevel
                TaxableFlag
                    label is "Taxable"
                TaxCode
            column2
                text of "Amounts"
                    bold
                MinimumAmount
                MaximumAmount
                PercentOfSales
                BaseAmount
            column3
                text of "Accounts"
                    bold
                RevenueAccount
                    label is "Sales"
                    compact format
                AccrualAccount
                    label is "Accrual"
                    compact format
                AccrualOffsetAccount
                    label is "AccrualOffset"
                    compact format
        paragraph
            button of "SlidingScale"
                visible when (not PercentOfSalesEntered)
                link is SlidingScale
