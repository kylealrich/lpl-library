Main is a Form
    title is "BudgetTemplate"
    Layout
        three column distributed
            column1
                visible when (IsCreated)
                    BudgetTemplate
                        display as text
                visible when (not IsCreated)
                    BudgetTemplate
                Description
            column2
                Scenario.ScenarioDescription
                    label is "Scenario"
                    display as text
                UseCurrency
                    label is "EditCurrency"
            column3
                Status
                    display as tag
                        color of gray when (IsNonActiveStatus)
                        color of yellow when (Status.Processing)
                        color of green when (Status.Ready)
                paragraph
                    visible when (CanClearLocalBudgetCopy)
                        LocalBudgetCopyExists
                            no label
                            mouse over text is "RunThe_Clear_Local_Budget_CopyActionBeforeThe_Start_Incremental_LoadProcess."
                            display as tag
                                color of blue
                    visible when (Status.Ready)
                        visible when (HasPending)
                            PendingMessage
                                no label
                                mouse over text is "<PendingMessageHelpText>"
                                display as tag
                                    color of red
