ContractLineMemberMain is a Form
    title is "ContractLineMember"
    Layout
        two column distributed
            column1
                paragraph
                    MfgContractTierInfo.Tier
                        label is "Tier"
                        select is ContractTierSelect
                    ContractTierRel.TierTitle
                        no label
                        display as text
                paragraph
                    visible when (not ContractLineTierCostExists)
                        BaseCost
                            display as text
                    visible when (ContractLineTierCostExists)
                        ContractLineTierCostRel.TierCost
                            display as text
                    visible when (PriceFactorEntered)
                        PriceFactor
                            label is "TierAdjustment"
                            display as text
                    FreightFactor
                        label is "FreightFactor"
                        display as text
                paragraph
                    CurrentNetCost
                        label is "Manufacturer'sNetCost"
                        display as text
                    NetCostOverride
                        label is "Manufacturer'sNetCostOverride"
                    visible when (HasPreviousCost)
                        PreviousCost
                            display as text
                paragraph
                    Contract.Stockless
                        display as text
                    Priority
                    Modified
                        display as text
                visible when (ShowUpdateCanUseForCostDefaulting)
                    paragraph
                        CanUseForCostDefaulting
                            label is "CanUseForCostDefaultingFlag"
                visible when (ShowTextCanUseForCostDefaulting)
                    paragraph
                        CanUseForCostDefaulting
                            label is "CanUseForCostDefaultingFlag"
                            display as text
            column2
                paragraph
                    PurchaseMethod
                        show up to 25 characters
                    visible when (DistributorMembersExist)
                        text of "AssociatedDistributorContractLineMembersExist"
                            bold
                    visible when (DistributorMembersWillBeCreated)
                        text of "DistributorContractLineMembersWillBeCreated"
                            bold
                    visible when (DistributorMembersWillNotBeCreated)
                        text of "DistributorContractLineMembersWillNotBeCreated"
                            bold
                paragraph
                    visible when (NoHoldOnLineMember)
                        text of "LineMemberIsNotOnHold"
                            bold
                    visible when (HoldFromContract)
                        text of "LineMemberIsOnHoldFromContract"
                            bold
                        visible when (Contract.HoldCodeEntered)
                            Contract.ProcurementReasonCode
                                display as text
                            Contract.ProcurementReasonCode.Description
                                no label
                                display as text
                    visible when (HoldFromContractLine)
                        text of "LineMemberIsOnHoldFromContractLine"
                            bold
                        visible when (ContractLine.HoldCodeEntered)
                            ContractLine.ProcurementReasonCode
                                display as text
                            ContractLine.ProcurementReasonCode.Description
                                no label
                                display as text
                    visible when (HoldFromLineMember)
                        text of "LineMemberIsOnHold"
                            bold
                        visible when (ProcurementReasonCode entered)
                            ProcurementReasonCode
                                display as text
                            ProcurementReasonCode.Description
                                no label
                                display as text
                    visible when (PricingOnHold)
                        text of "LineMemberIsOnHoldBecausePurchaseMethodDoesNotAllowCostDefaultingButMemberHasBeenActivated"
                            bold
                    visible when (DistMembersOnHold)
                        text of "AssociatedDistributorContractLineMembersAreOnHold"
                            bold
                    visible when (DistMembersNotOnHold)
                        text of "AssociatedDistributorContractLineMembersAreNotOnHold"
                            bold
        two column distributed
            column1
                header2 of "TierPrice"
                paragraph
                    TierMarkupDiscount
                        label is "Type"
                    visible when (not TierMarkupDiscount.Fixed)
                        LineTierPricingAmtPct.TierCost
                            label is "Cost"
                        LineTierPricingAmtPct.TierPercent
                            label is "Percent"
            column2
                header2 of "TierFreightFactor"
                paragraph
                    FreightMarkupDiscount
                        label is "Type"
                    LineFreightPricingAmtPct.FreightCost
                        label is "Cost"
                    LineFreightPricingAmtPct.FreightPercent
                        label is "Percent"
