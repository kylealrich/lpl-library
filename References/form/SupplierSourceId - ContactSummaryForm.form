ContactSummaryForm is a Form
    title is "Profile_for<MainContact.FirstAndLastName>_with<Supplier.SupplierName>"
    called out actions only
    Actions
        action is save and close
            action icon is save
        action is refresh
            label is "_"
    Layout
        visible when (not actor.agent(SupplierSourceId).InactiveAtSomeLevel)
            four column
                column1
                    Picture.File
                        display as portrait image up to 5 lines
                column2
                    MainContact.GivenName
                        label is "FirstName"
                    visible when (not Supplier.SupplierExtEntityEnabled)
                        EmailAddress
                    visible when (Supplier.SupplierExtEntityEnabled)
                        visible when (ContactIsMe)
                            EmailAddress
                                display as text
                        visible when (not ContactIsMe)
                            EmailAddress
                                display as text
                    ContactTitle
                        label is "Title"
                column3
                    MainContact.FamilyName
                        label is "LastName"
                    visible when (not Supplier.SupplierExtEntityEnabled)
                        visible when (SupplierGroup.RequireEmailConfirmation)
                            ConfirmEmailAddress
                                label is "*_ConfirmEmailAddress"
                    visible when (Supplier.SupplierExtEntityEnabled)
                        visible when (ContactIsMe)
                            button of "Update" with icon.edit
                                visible when (EmailAddress entered)
                                action is UpdateEmail
                                display as link
                        visible when (not ContactIsMe)
                            button of "Update" with icon.edit
                                visible when (EmailAddress entered)
                                action is AdminUpdateEmail
                                display as link
                    visible when (not Supplier.SupplierExtEntityEnabled)
                        LoginName
                            display as text
                column4
                    text of "_"
                    visible when (not Supplier.SupplierExtEntityEnabled)
                        ReceiveEmailNotification
                    visible when (Supplier.SupplierExtEntityEnabled)
                        visible when (ContactIsMe)
                            ReceiveEmailNotification
                        visible when (not ContactIsMe)
                            ReceiveEmailNotification
            header2 of "_"
            paragraph
                TelephoneNumber
            paragraph
                MobilePhone
            paragraph
                FaxNumber
            visible when (LocationAddressExists)
                header2 of "AddressInformation"
                LocationAddress
                    form is PostalAddressShortRequired
                visible when (SupplierGroup.DisplayTypeForRegistration)
                    LocationAddress.Type
        visible when (actor.agent(SupplierSourceId).InactiveAtSomeLevel)
            display as text
                four column
                    column1
                        Picture.File
                            display as portrait image up to 5 lines
                    column2
                        ContactTitle
                            label is "Title"
                        EmailAddress
                    column3
                        MainContact.FirstAndLastName
                            label is "Name"
                        visible when (SupplierGroup.RequireEmailConfirmation)
                            single column
                                ConfirmEmailAddress
                                    label is "*_ConfirmEmailAddress"
                    column4
                        text of "_"
                        ReceiveEmailNotification
                header2 of "_"
                paragraph
                    TelephoneNumber
                paragraph
                    MobilePhone
                paragraph
                    FaxNumber
                visible when (LocationAddressExists)
                    header2 of "AddressInformation"
                    LocationAddress
                        form is PostalAddressShortRequired
                    visible when (SupplierGroup.DisplayTypeForRegistration)
                        LocationAddress.Type
