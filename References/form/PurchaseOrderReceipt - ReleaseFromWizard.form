ReleaseFromWizard is an ActionForm
    action is MobileReleaseFromWizard
    Layout
        display as text
            visible when (LineHasBuyerMessageCondition)
                paragraph
                    BuyerMessagesExistMessage
                        no label
                        display as tag
                            color of red
                    button of "BuyerMessage" with icon.comment
                        link is UnreleasedBuyerMessages
                        display as link
                header1 of "_"
            two column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                    ReferenceNumber
                    PurchaseOrder.Vendor.RepresentativeText
                    ShipToLocation.RepresentativeText
                        label is "ReceivedLocation"
                    PurchaseOrder.BuyerEmployeeRel.FirstLastName
                        label is "Buyer"
                    PurchaseOrder.BuyerEmployeeRel.EmployeeWorkEmailAddress
                        label is "EmailAddress"
                column2
                    PurchaseOrder
                    PurchaseOrder.LineCountNonServiceLine
                        label is "ReceiptLines"
                    ReceivedDate
                        label is "Date,TimeReceived"
                    PurchaseOrder.DerivedPurchaseFromLocationRepresentativeText
                        label is "PurchaseFrom"
                    PurchaseOrder.FreightTerm.Description
                        label is "FreightTerms"
                    PurchaseOrder.BuyerEmployeeRel.EmployeeWorkTelephone
            single column
                blank line
            two column distributed
                button of "AddComments" with icon.document2
                    link is PurchaseOrderReceiptComments
                    display as link
