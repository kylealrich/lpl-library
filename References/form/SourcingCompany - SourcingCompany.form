SourcingCompany is a Form
    title is "SourcingCompany"
    Layout
        header3 of "ApprovalInformation"
        four column distributed
            EventApprovalRequired
            AmendmentApprovalRequired
            AwardApprovalRequired
            DisputePeriod
        single column
            ApproverEmailAddress
                label is "ApproverEmail"
        header3 of "AmendmentInformation"
        four column distributed
            AmendmentCriteria
        header3 of "Miscellaneous"
        paragraph
            text of "SupplierPortalSourcingReportsLogo"
            visible when (HasReportLogo)
                ReportLogo.Title
            ReportLogo.File
                no label
        paragraph
            RecentlyFinalizeDay
                label is "DisplayEventsOnRecentlyFinalizedTab"
                show up to 35 characters
            text of "Days"
        single column
            RequireNonAwardReason
                label is "RequireNonAwardReasonCodes"
        paragraph
            UseCommentsForEventLineDesc
                label is "UsePOCommentsFromRequisitionForEventLineDescriptions"
            text of "WillAlsoMoveAllPOCommentsToEvent"
                italics
        paragraph
            BuyerCanAddCommodityCode
                label is "BuyerCanAddCommodityCodeToItemForContractOutput"
            visible when (BuyerCanAddCommodityCode)
                CommodityCodeEmail
                    label is "NotificationEmailIfCommodityCodeAddedToItem"
        single column
            ShowResponsesViewed
        two column
            CanRequestResponseModification
            CanAlwaysCreateEventAttachment
        header3 of "CloseDateChangeRulesWhileEventIsOpen"
        text of "IncludesBestAndFinalAndTwoStepCloseDates"
            italics
        text of "NonSealedBids"
            bold
        two column
            CloseDateChangeNonSealedEarlier
                label is "CanChangeToEarlier"
                display as horizontal radio buttons
            CloseDateChangeNonSealedLater
                label is "CanChangeToLater"
                display as horizontal radio buttons
        text of "SealedBids"
            bold
        two column
            CloseDateChangeSealedEarlier
                label is "CanChangeToEarlier"
                display as horizontal radio buttons
            ChangeCloseDateWithResponses
                label is "CanChangeToLater"
                display as horizontal radio buttons
        header3 of "EventDefaults"
        two column distributed
            column1
                PostingOptions
                    label is "SupplierPortalPostingOption"
                IncompleteBuyerScoringEdit
                    label is "IncompleteBuyerWeightingScoreEdit"
                VendorItemProcessing
            column2
                AllowTermsToBeNegotiated
                    label is "AllowTermsToBeNegotiated"
                ValidatedSuppliersForEvent
                    label is "OnlyRetrieveValidatedSuppliersForEventNotification"
                VendorItemDescriptionRequired
                    label is "RequireVendorItemDescriptionWhenVendorItemEntered"
                DeliveryDateResponseRequired
        header3 of "ResponseAlerts"
        two column distributed
            paragraph
                YellowAlert
                    label is "YellowAlert"
                text of "DaysBeforeEventCloseDate"
            paragraph
                RedAlert
                    label is "RedAlert"
                text of "DaysBeforeEventCloseDate"
