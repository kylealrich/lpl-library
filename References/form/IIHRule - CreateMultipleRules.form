CreateMultipleRules is an ActionForm
    action is CreateRulesForMultipleLocations
    Layout
        paragraph
            IIHRule
                label is "RuleID"
                display as text
            IIHRuleType
                label is "ConfigurationType"
                display as text
        paragraph
            PrmRuleName
                label is "RuleName"
        paragraph
            visible when (RuleOrder entered)
                RuleOrder
                    display as text
            PrmActive
                label is "Active"
        paragraph
            PrmInventoryCompany
                label is "Company"
                select is InventoryCompanyList
            PrmInventoryCompany.Name
                no label
                display as text
        visible when (ShowAllLocations)
            paragraph
                PrmRuleLocationArray.InventoryLocation[1]
                    label is "Location1"
                    select is AllActiveLocations
                PrmRuleLocationArray.InventoryLocation[2]
                    label is "Location2"
                    select is AllActiveLocations
            paragraph
                PrmRuleLocationArray.InventoryLocation[3]
                    label is "Location3"
                    select is AllActiveLocations
                PrmRuleLocationArray.InventoryLocation[4]
                    label is "Location4"
                    select is AllActiveLocations
            paragraph
                PrmRuleLocationArray.InventoryLocation[5]
                    label is "Location5"
                    select is AllActiveLocations
                PrmRuleLocationArray.InventoryLocation[6]
                    label is "Location6"
                    select is AllActiveLocations
            paragraph
                PrmRuleLocationArray.InventoryLocation[7]
                    label is "Location7"
                    select is AllActiveLocations
                PrmRuleLocationArray.InventoryLocation[8]
                    label is "Location8"
                    select is AllActiveLocations
            paragraph
                PrmRuleLocationArray.InventoryLocation[9]
                    label is "Location9"
                    select is AllActiveLocations
                PrmRuleLocationArray.InventoryLocation[10]
                    label is "Location10"
                    select is AllActiveLocations
        visible when (ShowOnlyPerpetualLocations)
            paragraph
                PrmRuleLocationArray.InventoryLocation[1]
                    label is "Location1"
                PrmRuleLocationArray.InventoryLocation[2]
                    label is "Location2"
            paragraph
                PrmRuleLocationArray.InventoryLocation[3]
                    label is "Location3"
                PrmRuleLocationArray.InventoryLocation[4]
                    label is "Location4"
            paragraph
                PrmRuleLocationArray.InventoryLocation[5]
                    label is "Location5"
                PrmRuleLocationArray.InventoryLocation[6]
                    label is "Location6"
            paragraph
                PrmRuleLocationArray.InventoryLocation[7]
                    label is "Location7"
                PrmRuleLocationArray.InventoryLocation[8]
                    label is "Location8"
            paragraph
                PrmRuleLocationArray.InventoryLocation[9]
                    label is "Location9"
                PrmRuleLocationArray.InventoryLocation[10]
                    label is "Location10"
        visible when (ShowOnlyParLocations)
            paragraph
                PrmRuleLocationArray.InventoryLocation[1]
                    label is "Location1"
                    select is ParAndExchangeCartLocationsSelect
                PrmRuleLocationArray.InventoryLocation[2]
                    label is "Location2"
                    select is ParAndExchangeCartLocationsSelect
            paragraph
                PrmRuleLocationArray.InventoryLocation[3]
                    label is "Location3"
                    select is ParAndExchangeCartLocationsSelect
                PrmRuleLocationArray.InventoryLocation[4]
                    label is "Location4"
                    select is ParAndExchangeCartLocationsSelect
            paragraph
                PrmRuleLocationArray.InventoryLocation[5]
                    label is "Location5"
                    select is ParAndExchangeCartLocationsSelect
                PrmRuleLocationArray.InventoryLocation[6]
                    label is "Location6"
                    select is ParAndExchangeCartLocationsSelect
            paragraph
                PrmRuleLocationArray.InventoryLocation[7]
                    label is "Location7"
                    select is ParAndExchangeCartLocationsSelect
                PrmRuleLocationArray.InventoryLocation[8]
                    label is "Location8"
                    select is ParAndExchangeCartLocationsSelect
            paragraph
                PrmRuleLocationArray.InventoryLocation[9]
                    label is "Location9"
                    select is ParAndExchangeCartLocationsSelect
                PrmRuleLocationArray.InventoryLocation[10]
                    label is "Location10"
                    select is ParAndExchangeCartLocationsSelect
        paragraph
            visible when (not ExclusionTypeRule)
                PrmPrimaryReplenishment
                    no label
                    display as radio buttons
        paragraph
            visible when (PrmPrimaryReplenishment.Vendor)
                PrmItemGroup
                    label is "VendorGroup"
                PrmVendor
                    label is "Vendor"
                PrmVendor.VendorName
                    no label
                    display as text
        paragraph
            visible when (PrmPrimaryReplenishment.InventoryLocation)
                PrmSourceCompany
                    label is "SourceCompany"
                PrmSourceLocation
                    label is "SourceLocation"
                PrmSourceLocation.Name
                    no label
                    display as text
        paragraph
            visible when (ExclusionTypeRule)
                PrmItemRule
                    label is "Item"
        paragraph
            visible when (not ExclusionTypeRule)
                PrmItemRule
                    label is "Item"
                PrmMajorInventoryClassRule
                    label is "MajorInventoryClass"
        paragraph
            visible when (PrmItemRule)
                PrmItemGroup
                    label is "ItemGroup"
                PrmItem
                    label is "Item"
                PrmItem.Description
                    no label
                    display as text
                visible when (PrmMajorInventoryClassRule)
                    PrmMajorInventoryClass
                        label is "MajorInventoryClass"
                        show up to 10 characters
            visible when (PrmMajorInventoryClassRule)
                visible when (not PrmItemRule)
                    PrmItemGroup
                        label is "ItemGroup"
                    PrmMajorInventoryClass
                        label is "MajorInventoryClass"
                        show up to 10 characters
        visible when (IIHRuleType.OptimizationMethod)
            blank line
            header2 of "PerpetualOrderPolicyParameters"
            single column
                paragraph
                    PrmMaxModel
                        label is "MaxAndFixedOrderInventoryPolicy"
                    visible when (PrmMaxModel.CurrentGap)
                        text of "MaintainCurrentOrderFrequency"
                    visible when (PrmMaxModel.OrderFrequency)
                        text of "MaintainSpecificOrderFrequency"
                visible when (PrmMaxModel.OrderFrequency)
                    paragraph
                        PrmMaxParameter
                            label is "OrderFrequency"
                        text of "days"
                            align as label
        visible when (IIHRuleType.Cutoff)
            blank line
            header2 of "LowerAndUpperBounds"
            paragraph
                PrmRecommendationCutoffRange.MinimumCutoff
                    label is "LowerBound"
                PrmRecommendationCutoffRange.MaximumCutoff
                    label is "UpperBound"
                PrmRecommendationCutoffValueType
                    no label
                    display as radio buttons
        visible when (IIHRuleType.ServiceLevel)
            blank line
            header2 of "ServiceLevelParameters"
            paragraph
                PrmServiceLevel
                    label is "ServiceLevel"
        visible when (IIHRuleType.LeadTime)
            blank line
            header2 of "LeadTimeParameters"
            paragraph
                PrmVendorSourceDefaultLeadTime
                    label is "DefaultLeadTime"
                text of "days"
                    align as label
        visible when (IIHRuleType.OrderDays)
            blank line
            header2 of "OrderDaysSchedule"
            paragraph
                text of "OrderOn"
                PrmSchedule.Sunday
                PrmSchedule.Monday
                PrmSchedule.Tuesday
                PrmSchedule.Wednesday
                PrmSchedule.Thursday
                PrmSchedule.Friday
                PrmSchedule.Saturday
            paragraph
                PrmFrequency
                    label is "Every"
                text of "week(s)"
        visible when (IIHRuleType.ReceivingDays)
            blank line
            header2 of "ReceivingDaysSchedule"
            paragraph
                PrmReceivingSchedule
                    label is "ReceivingSchedule"
                    display as horizontal radio buttons
        visible when (IIHRuleType.ParTargetDays)
            blank line
            header2 of "ParTargetDaysParameters"
            single column
                PrmTargetDaysRange.LowerBound
                    label is "DailySchedule"
                    display as text
                PrmTargetDaysBetweenOrders
                    label is "LowThreshold"
                PrmTargetDaysRange.SemiWeeklySchedule
                    label is "SemiWeeklySchedule"
                    display as text
                PrmHighThreshold
                    label is "HighThreshold"
                PrmTargetDaysRange.UpperBound
                    label is "WeeklySchedule"
                    display as text
