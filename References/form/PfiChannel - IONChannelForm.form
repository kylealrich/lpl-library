IONChannelForm is a Form
    title is "IONChannel"
    restrict action TestConnectionWithTraceLog
    Layout
        single column
            PfiChannel
            IsEnabled
            Description
            visible when (not IsMultiTenant)
                IONChannel.JDBCDriver
                IONChannel.DatabaseURL
                IONChannel.User
                IONChannel.Password
                IONChannel.DbSchema
            NotifyConnectLoss
                label is "NotifyByEmail"
            button of "TestConnection"
                action is TestConnection
