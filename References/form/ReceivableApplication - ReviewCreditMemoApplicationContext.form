ReviewCreditMemoApplicationContext is a Form
    title is "ReviewCredit"
    Layout
        display as text
            two column
                paragraph
                    Company
                    Company.Name
                        no label
                    Company.Currency
                        no label
                paragraph
                    ReceivableCreditInvoiceDetailRel.ReceivableProcessLevel
                        label is "ProcessLevel"
                    Status
            two column
                paragraph
                    CreditTransaction.CreditCustomer
                        label is "Customer"
                    CreditTransaction.CreditCustomer.Name
                        no label
                paragraph
                    ReceivableOperator
                        label is "Operator"
                    ApplicationSource
                        label is "Source"
            two column
                paragraph
                    CreditTransaction.CreditNumber
                    ReceivableCreditInvoiceDetailRel.OriginalCurrency
                        no label
                    ReceivableCreditInvoiceDetailRel.Status
                paragraph
                    ReceivableCreditInvoiceDetailRel.GeneralLedgerDate
                        label is "GlobalLedgerDate"
                    ReceivableCreditInvoiceDetailRel.InvoiceAmount.CurrencyAmount
                    ReceivableCreditInvoiceDetailRel.OpenAmount
            two column
                paragraph
                    ReceivableApplication.TransType
                        label is "Transaction"
                    ReceivableApplication.Invoice
                    ReceivableInvoiceDetailRel.OriginalCurrency
                        no label
                paragraph
                    ReceivableInvoiceDetailRel.DueDate
                    ReceivableInvoiceDetailRel.InvoiceAmount.CurrencyAmount
