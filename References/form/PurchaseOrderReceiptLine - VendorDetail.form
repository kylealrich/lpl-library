VendorDetail is a Form
    title is "VendorItem"
    Layout
        two column distributed
            column1
                paragraph
                    VendorItem
                    VendorItem.VendorItemDescription
                        no label
                        display as text
            display as text
                paragraph
                    VendorItem.Manufacturer.ManufacturerCode
                        label is "ManufacturerCode"
                    VendorItem.Manufacturer.ManufacturerDivision
                        label is "ManufacturerDivision"
                    VendorItem.ManufacturerNumber
                        label is "ManufacturerNumber"
                single column
                    VendorItem.LabelerIdentificationCode
                        label is "L\\I\\CCode"
            column2
                visible when (HasVendorItemBuyUOM)
                    paragraph
                        VendorItem.VendorBuyUOM.UnitOfMeasure
                            label is "BuyU\\O\\M"
                            display as text
                        text of "<VendorItem.VendorBuyUOM.UOMConversion>_\\<Item.StockUOM>per<VendorItem.VendorBuyUOM>"
                paragraph
                    ItemGTIN
                    ItemGTIN.AbbreviatedDescription
                        no label
                        display as text
