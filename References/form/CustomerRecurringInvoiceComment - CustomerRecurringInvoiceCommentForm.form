CustomerRecurringInvoiceCommentForm is a Form
    is primary
    title is "CustomerRecurringInvoiceComments"
    Layout
        three column distributed
            column1
                paragraph
                    visible when (RecurringInvoiceParameter not entered)
                        Company
                    visible when (RecurringInvoiceParameter entered)
                        Company
                            display as text
                    Company.Name
                        no label
                        display as text
                paragraph
                    visible when (RecurringInvoiceParameter not entered)
                        RecurringInvoiceParameter
                            label is "RecurringInvoice"
                    visible when (RecurringInvoiceParameter entered)
                        RecurringInvoiceParameter
                            label is "RecurringInvoice"
                            display as text
                    RecurringInvoiceParameter.Description
                        no label
                        display as text
                paragraph
                    visible when (Customer not entered)
                        Customer
                    visible when (Customer entered)
                        Customer
                            display as text
                    Customer.Name
                        no label
                        display as text
            column2
                paragraph
                    visible when (CustomerRecurringInvoiceComment entered)
                        CustomerRecurringInvoiceComment
                            label is "Sequence"
                            display as text
                paragraph
                    CustomerShipTo
                paragraph
                    PrintCode
            column3
                paragraph
                    StartDate
                paragraph
                    StopDate
        paragraph
            CommentText
