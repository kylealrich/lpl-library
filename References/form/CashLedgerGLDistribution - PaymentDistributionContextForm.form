PaymentDistributionContextForm is a Form
    title is "CashLedgerPaymentDistribution"
    Layout
        two column distributed
            display as text
                column1
                    paragraph
                        CashCode.CashCodeAndDescription
                            label is "CashCode"
                        CashCode.Currency
                            no label
                    CashLedgerPaymentRel.Reference
                        label is "TransactionNumber"
                    paragraph
                        CashLedgerPaymentRel.BankCheckAmount
                            label is "Amount"
                        visible when (CashLedgerPaymentRel.IsUnreleased)
                        paragraph
                            CashLedgerPaymentRel.DistributionTotal
                                label is "AppliedAmount"
                            CashLedgerPaymentRel.BalanceAmount
                                label is "Balance"
                column2
                    CashLedgerGLDistribution.BankTransactionCode.BankTransactionCodeName
                        label is "TransactionCode"
                    paragraph
                        CashLedgerPaymentRel.CompanyBaseData.OverrideCompany.RepresentativeText
                            label is "Company"
                        CashLedgerPaymentRel.CompanyBaseData.OverrideCompany.Currency
                            no label
