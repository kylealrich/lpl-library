MobilePurchaseOrderLineForm is a CompositeForm
    title is "PO<PurchaseOrder>Line<LineNumber>"
    context form is MobilePurchaseOrderLineContext
        background is theme color
    restrict action FixReceivedQuantity
    restrict action Delete
    restrict action CancelLine
    restrict action Unreleased.ReplaceItem
    restrict action Released.ReplaceItem
    restrict action Released.CancelLineRemaining
    restrict action SubstituteVendorItem
    restrict action CreateInvoiceDetailsFromPoLines
    restrict action CreateDetailsFromAllRemainingLines
    restrict action CreateMatchWorkDetailsForServiceItems
    restrict action AttachItemToRecallProduct
    restrict action Released.ReceiptArchive
    restrict action Released.ReplaceItem
    restrict action Canceled.Close
    Actions
        action is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is MobilePurchaseOrderLineMain
    Options is a Panel
        form is MobilePurchaseOrderLineOptions
    Pricing is a Panel
        form is MobilePricingInformation
    Quantities is a Panel
        form is MobilePOLineQuantityDetailForm
    Costs is a Panel
        form is MobilePOLineCostForm
    DistributionAccount is a Panel
        visible when (IsInventoryType)
        form is MobileDistribution
    Distributions is a Panel
        title is "<DerivedDistributionsPanelLabel>"
        visible when (not IsInventoryType)
        list is PurchaseOrderLineDistributionsRel.MobilePurchaseOrderLineDistributions
    ItemAddOnCost is a Panel
        title is "AddOnCharges"
        list is PurchaseOrderAndLineAddOnCharge set.MobileAddOnCostsForAPurchaseOrderLine
    Sources is a Panel
        list is PurchaseOrderLineSource set.MobilePurchaseOrderLineSourceList
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is PurchaseOrderLineComment set.MobilePurchaseOrderLineCommentList
    Errors is a Panel
        visible when (LineErrorsExist)
        list is PurchaseOrderLineError set.MobilePurchaseOrderLineErrorList
