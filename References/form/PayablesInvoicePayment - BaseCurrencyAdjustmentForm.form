BaseCurrencyAdjustmentForm is a Form
    title is "BaseCurrencyAdjustment"
    Layout
        single column
            visible when (false)
                PayablesInvoice.InvoiceAmount.AssignToCurrency
            PayablesInvoice.InvoiceAmount.FunctionalAmount.EnteredCurrencyAmount
            visible when (false)
                PayablesInvoice.DiscountAmount.AssignToCurrency
            PayablesInvoice.DiscountAmount.FunctionalAmount.EnteredCurrencyAmount
                label is "BaseDiscountAmount"
            PayablesInvoice.TotalPaymentAmount
                display as text
            PayablesInvoice.InvoiceAmount.FunctionalAmount.EnteredCurrencyRate
                label is "DiscountRate"
            PayablesInvoice.RevalueCurrency
