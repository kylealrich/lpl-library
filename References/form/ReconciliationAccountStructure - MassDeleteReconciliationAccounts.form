MassDeleteReconciliationAccounts is an ActionForm
    action is MassDeleteReconciliationAccounts
    title is "MassDeleteReconciliationAccounts"
    Layout
        visible when (not ReconciliationType.NonAccount)
            header3 of "ReconciliationAccountSelectionMethod"
            paragraph
                PrmSelectionMethod
                    no label
                    display as horizontal radio buttons
        visible when (PrmSelectionMethod.AccountSelection)
            paragraph
                PrmReconciliationAccountSelection
                    label is "AccountSelection"
                    raise blue alert when (true)
                        mouse over text is "OnlyAccountsWithoutPeriodReconciliationsWillBeDeleted"
                PrmReconciliationAccountSelection.Condition
                    no label
                    display as text
        visible when (PrmSelectionMethod.AccountRange)
            paragraph
                PrmReconciliationFromAccount
                    label is "FromAccount"
                    raise blue alert when (true)
                        mouse over text is "OnlyAccountsWithoutPeriodReconciliationsWillBeDeleted"
                PrmReconciliationToAccount
                    label is "ToAccount"
