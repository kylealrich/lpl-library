TrueCostAllocationRunParameters is a Form
    Layout
        three column distributed
            display as text
                column1
                    paragraph
                        TrueCostAllocationRun.AllocationRun.AllocationControl
                    paragraph
                        TrueCostAllocationRun.AllocationRun.Allocation
                    paragraph
                        TrueCostAllocationRun.AllocationRun.AllocationGroup
                    paragraph
                        TrueCostAllocationRun.AllocationControl.Calendar
                            label is "Calendar"
                    paragraph
                        TrueCostAllocationRun.AllocationRun.CurrencyTable
                column2
                    paragraph
                        TrueCostAllocationRun.AllocationRun.AllocationPeriod
                    paragraph
                        TrueCostAllocationRun.AllocationRun.MultiMonthAllocation
                            label is "Multi-\\MonthAllocation"
                            display as text
                    visible when (not ForMultiMonthAllocation)
                        paragraph
                            TrueCostAllocationRun.AllocationRun.PostingDate
                    visible when (ForMultiMonthAllocation)
                        paragraph
                            TrueCostAllocationRun.AllocationRun.RunStartDate
                                label is "FromAllocationPostDate"
                        paragraph
                            TrueCostAllocationRun.AllocationRun.RunEndDate
                                label is "ToAllocationPostDate"
                    paragraph
                        TrueCostAllocationRun.AllocationRun.FromStep
                    paragraph
                        TrueCostAllocationRun.AllocationRun.ToStep
                column3
                    paragraph
                        TrueCostAllocationRun.AllocationRun.UseCapacityLedger
                            label is "IsCapacity"
                    paragraph
                        PublishForBirstReport
                            label is "Publish_for_BirstReport"
                    paragraph
                        visible when (AllocationRunCanceledWithJournal)
                            ReverseOriginalJournal
                    paragraph
                        create stamp
                            label is "RunDate/Time"
                            display as text
