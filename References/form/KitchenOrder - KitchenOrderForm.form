KitchenOrderForm is a CompositeForm
    is primary
    title is "<DerivedKitchenOrderTitle>"
    context form is KitchenOrderContext
        background is theme color
    restrict action Preparing.Complete
    restrict action Preparing.CopyPlannedQuantities
    restrict action CopyKitchenOrder
    Actions
        navigation is CompleteForm
            action icon is submit
            label is "Complete"
            hide when invalid
        action is Open.Prepare
            action icon is release
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Ingredients is a Panel
        list is KitchenOrderLine set.primary
    Details is a Panel
        visible when (MultipleDetailsAllowed)
        list is KitchenOrderDetail set.RecipeItemDetailList
    Burdens is a Panel
        list is KitchenOrderBurden set.KitchenOrderBurdenList
    Costs is a Panel
        form is Costs
    Instructions is a Panel
        list is KitchenOrderInstruction set.KitchenOrderInstructionList
