SupplierSideCertificationForm is a Form
    is primary
    title is "Certification"
    called out actions only
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save and close
        action is save and new
        action is Create
        action is Delete
    Layout
        display as text
            paragraph
                Supplier
                Supplier.SupplierName
                    no label
        paragraph
            SupplierSourceId
                label is "Contact"
            SupplierSourceId.MainContact.FirstAndLastName
                no label
                display as text
        visible when (CommodityCodeAllowed)
            single column
                CommodityCode
                    compact format
                    select is CommodityCodesForASupplierContact
        paragraph
            SupplierCertification.PayablesCertificationCode
                label is "CertificationCode"
                select is SupplierCertificationCodes
            SupplierCertification.PayablesCertificationCode.Description
                no label
                display as text
        single column
            SupplierCertification.CertificationEffectiveDate
                label is "EffectiveDate"
            CertificationExpirationDate
                label is "ExpirationDate"
        single column
            Active
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
