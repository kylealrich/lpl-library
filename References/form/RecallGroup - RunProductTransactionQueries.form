RunProductTransactionQueries is an ActionForm
    action is RunProductTransactionQueries
    Layout
        paragraph
            PrmRecallGroup
                label is "ItemLifecycleManagementGroup"
            PrmRecallGroup.Description
                no label
                display as text
        blank line
        paragraph
            text of "DefaultTransactionQueryParametersFromRecallGroupWillBeUsed"
                italics
        single column
            ReceivedDate
        blank line
        single column
            ParmCreateTasks
            NumberOfPriorMonthsToSearchTransactions
            visible when (ParmCreateTasks)
                DefaultTaskPriority
                paragraph
                    text of "TasksDueInDaysFromToday"
                        bold
                    TasksDueInDaysFromTodayClass1
                        label is "FDAClass1"
                    TasksDueInDaysFromToday
                        label is "NonFDAClass1"
                IncludeWatchers
                    label is "AttachWatchersForOrganizationToRecallNoticeNotifications"
        visible when (ParmCreateTasks)
            paragraph
                NonLocationActivityUser
                    label is "AssignDocumentActivityTo"
                NonLocationActivityUser.RecallUserName
                    no label
                    display as text
            paragraph
                NonLocationInstructions
                    label is "TaskInstructionsForDocumentActivity"
