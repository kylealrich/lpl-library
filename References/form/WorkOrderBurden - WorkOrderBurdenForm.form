WorkOrderBurdenForm is a Form
    Layout
        visible when (IsHoldCodeEntered)
            paragraph
                WorkOrder.HoldCode.RepresentativeText
                    label is "HoldCode"
                    display as text
        visible when (IsWorkOrderVendorEntered)
            paragraph
                WorkOrder.Vendor.RepresentativeText
                    label is "Vendor"
                    display as text
        two column
            visible when (IsOffsiteDateEntered)
                WorkOrder.OffsiteDate
                    label is "DateSent"
                    display as text
            visible when (IsReturnedDateEntered)
                WorkOrder.ReturnedDate
                    label is "ReturnedDate"
                    display as text
        paragraph
            BurdenCode
            BurdenCode.Description
                no label
                display as text
        paragraph
            FlatAmount
        paragraph
            AmountPerUnit
        paragraph
            AlternateUnitOfMeasure
                label is "AlternateU\\O\\M"
        paragraph
            PerBurdenUnitQuantity
                label is "Quantity"
        paragraph
            PerBurdenUnitMultiplier
                label is "Multiplier"
        paragraph
            PercentageOfInventoryCost
                label is "Percent"
        paragraph
            Vendor
            Vendor.VendorName
                no label
                display as text
        visible when (IsReturnedFromOffsiteOrProductionFeedbackInProcess)
            visible when (BurdenCode.BurdenType.FlatAmount)
                paragraph
                    ActualFlatAmount
            paragraph
                ActualAmountPerUnit
            visible when (BurdenCode.BurdenType.AmountPerFinishedGoodsUnit)
                paragraph
                    ActualAlternateUnitOfMeasure
                        label is "ActualAlternateU\\O\\M"
            visible when (BurdenCode.BurdenType.AmountPerBurdenUnit)
                paragraph
                    ActualPerBurdenUnitQuantity
                paragraph
                    ActualPerBurdenUnitMultiplier
            visible when (BurdenCode.BurdenType.PercentOfFinishedGoodsInventoryCost)
                paragraph
                    ActualPercentageOfInventoryCost
                        label is "ActualPercent"
