ToleranceErrorContext is a Form
    title is "ContractLinePriceChange"
    Layout
        display as text
            paragraph
                ContractGroup
                ContractGroup.ProcurementGroup.Description
                    no label
            paragraph
                Contract
                Contract.Name
                    no label
                ContractLine
                    label is "Line"
            paragraph
                Contract.Supplier
                    label is "Supplier"
                Contract.Supplier.SupplierName
                    no label
                Contract.Status
                    label is "Status"
            two column
                visible when (ContractLine.IsDistributorWithManufacturerContract)
                    ContractLine.ManufacturerContract
                        label is "ManufacturerContract"
                    ContractLine.ManufacturerContractLine
                        label is "Line"
            visible when (Contract.IsManufacturerContract)
                single column
                    FromTier
                    ContractTier
            single column
                visible when (FromImportCondition)
                    FromImport
                visible when (FromContractCondition)
                    FromContract
