ApprovalSettings is a Form
    title is "DocumentHeaderApprovalSettings"
    Layout
        two column independent
            ApprovalRequiredForPayablesAndReceivables
            visible when (IsSubjectsAndContentsNotEntered)
                button of "UpdateDocumentHeaderApprovalEmailFields"
                    action is UpdateDocumentHeaderApprovalEmailFieldsForThisGroup
                    display as link
        header2 of "EmailTemplateSettings"
        header3 of "SubmittedForApprovalMessage"
        single column
            DocumentHeaderApprovalEmailSubject
                label is "EmailSubject"
            DocumentHeaderApprovalEmailContent
                label is "EmailContent"
                use text area of 10 lines
        header4 of "SubmittedForPayablesApprovalMessage"
        single column
            DocumentHeaderPayableApprovalEmailSubject
                label is "PayablesEmailSubject"
            DocumentHeaderPayableApprovalEmailContent
                label is "PayablesEmailContent"
                use text area of 10 lines
        header4 of "SubmittedForReceivablesApprovalMessage"
        single column
            DocumentHeaderReceivableApprovalEmailSubject
                label is "ReceivablesEmailSubject"
            DocumentHeaderReceivableApprovalEmailContent
                label is "ReceivablesEmailContent"
                use text area of 10 lines
        two column
            DocumentHeaderApprovalIncludeLink
            DocumentHeaderApprovalIncludeRelatedDocs
        header3 of "ApprovedMessage"
        single column
            DocumentHeaderApprovedEmailSubject
                label is "EmailSubject"
            DocumentHeaderApprovedEmailContent
                label is "EmailContent"
                use text area of 10 lines
            DocumentHeaderApprovedIncludeRelatedDocs
        header3 of "RejectionMessage"
        single column
            DocumentHeaderRejectEmailSubject
                label is "EmailSubject"
            DocumentHeaderRejectEmailContent
                label is "EmailContent"
                use text area of 10 lines
            DocumentHeaderRejectIncludeRelatedDocs
