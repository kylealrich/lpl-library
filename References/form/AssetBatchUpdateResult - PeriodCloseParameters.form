PeriodCloseParameters is a Form
    title is "Parameters"
    Layout
        paragraph
            FinanceEnterpriseGroup
        paragraph
            Book
                label is "Book"
            text of "Or"
            BookGroup
                label is "BookGroup"
        paragraph
            Company
                select is Companies
            Company.GeneralLedgerCompany.Name
                no label
                display as text
            text of "Or"
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        paragraph
            AssetGroupSelection
                label is "AssetGroupSelection"
            visible when (IsAssetGroupEntered)
                AssetGroup
                    label is "AssetGroup"
        single column
            paragraph
                DetailMode
                IncludeTransactionAmounts
