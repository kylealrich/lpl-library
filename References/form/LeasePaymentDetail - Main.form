Main is a Form
    Layout
        four column distributed
            column1
                DueDate
                    label is "DueDate"
            column2
                visible when (RecordExists)
                    LeasePaymentDetail.PaymentNumber
                        label is "PaymentNumber"
                        display as text
                visible when (not RecordExists)
                    LeasePaymentDetail.PaymentNumber
                        label is "PaymentNumber"
            column3
                PaymentAmount
                    label is "PaymentAmount"
            column4
                visible when (RecordExists)
                    LeasePaymentDetail.ExecutoryCostCode
                        label is "NonLeaseComponent"
                        display as text
                visible when (not RecordExists)
                    LeasePaymentDetail.ExecutoryCostCode
                        label is "NonLeaseComponent"
        two column
            column1
                header2 of "Compute"
                paragraph
                    ComputeGroup.Company
                    ComputeGroup.Company.Name
                        no label
                        display as text
                    text of "Or"
                    ComputeGroup.GeneralLedgerCompanyGroup
                        label is "CompanyGroup"
                    ComputeGroup.GeneralLedgerCompanyGroup.Description
                        no label
                        display as text
                blank line
                paragraph
                    ComputeGroup.ComputeFromAccount
                        compact format
                paragraph
                    ComputeGroup.ComputeThroughAccount
                        compact format
                paragraph
                    GeneralLedgerBudgetNumber
                        label is "BudgetNumber"
                    Period
                    Year
                header2 of "AdvancedComputeSettings"
                paragraph
                    AccrueFlag
                        label is "AccruePayment"
                    AccrueReverseFlag
                        label is "Reverse"
                paragraph
                    ComputeBaseAmount
                    MaximumPayment
                    AdvancedComputeOption
            column2
                header2 of "Tax"
                paragraph
                    Taxable
                paragraph
                    TaxCode
                    TaxCode.Description
                        no label
                        display as text
                paragraph
                    TransactionTaxableAmount
                        label is "TaxableAmount"
                    PercentTaxable
                        label is "_OrPercent"
                paragraph
                    TaxUsageCode
                    TaxUsageCode.Description
                        no label
                        display as text
                blank line
                visible when (AllowLandedTax)
                    paragraph
                        TransactionLandTax
                            label is "LandedTax"
                            display as text
                paragraph
                    TotalTaxAmount
                        display as text
                paragraph
                    TotalPaymentAmount
                        display as text
