ValidateRecords is an ActionForm
    action is ValidateRecords
    Layout
        header4 of "ValidationOptions"
        single column
            ValidateRequiredFields
                label is "RequiredFields"
                display as switch
            ValidateLength
                label is "Length"
                display as switch
            ValidateCharacters
                label is "Characters"
                display as switch
        visible when (ValidateCharacters)
            header4 of "CharacterValidationSettings"
            single column
                CharacterCheck
                    label is "CharacterType"
                visible when (CharacterCheck.UserDefined)
                    CharacterExpression
