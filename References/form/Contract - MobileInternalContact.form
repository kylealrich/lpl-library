MobileInternalContact is a Form
    title is "PrimaryInternalContact"
    restrict action Draft.Release
    restrict action SelectContractForRebate
    restrict action CheckForContractLineErrors
    restrict action CloseContract
    restrict action CompareContractCost
    restrict action CreateContractBidWorksheet
    restrict action CreateContractDocument
    restrict action CreateDocumentWithFieldsOnly
    restrict action DeleteContract
    restrict action EmailContract
    restrict action EmailContractToSupplier
    restrict action HoldContract
    restrict action ImportParticipantsFromGroup
    restrict action ChangeSupplierAndVendor
    restrict action Active.CreateAddendum
    restrict action Active.CreateAmendment
    restrict action Active.CreateNewCopy
    restrict action CreateProcurementTemplateFromContract
    restrict action HoldManufacturerLinesOnly
    restrict action RemoveHoldManufacturerLinesOnly
    restrict action UpdateDistributorContract
    restrict action SetCanUseForCostDefaultingToYes
    restrict action SetCanUseForCostDefaultingToNo
    restrict action SetPreferredLineToYes
    restrict action SetPreferredLineToNo
    restrict action Draft.Release
    restrict action HoldContract
    restrict action RemoveContractHold
    restrict action Active.RemoveFromExpireListAction
    restrict action Amendment.RemoveFromExpireListAction
    restrict action Addendum.RemoveFromExpireListAction
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        single column
            PrimaryContactRel.DerivedContactNameID
                label is "Name"
                display as text
        two column
            column1 of 50%
                PrimaryContactRel.DerivedPhone
                    label is "Phone"
                    display as text
            column2 of 50%
                visible when (PrimaryContactRel.PhoneNumberExists)
                    button of icon.phone
                        link is "tel:<PrimaryContactRel.DerivedPhone>"
        two column
            column1 of 50%
                PrimaryContactRel.DerivedEmail
                    label is "Email"
                    display as text
            column2 of 50%
                visible when (PrimaryContactRel.EmailAddressExists)
                    button of icon.mail
                        link is "mailto:<PrimaryContactRel.DerivedEmail>"
        single column
            PrimaryContactRel.Address.DisplayAddressCommaSeparated
                label is "StreetAddress"
                display as text
