MobileAdvancedWarehouseAdditionalReceivingEntriesForm is a Form
    title is "AdditionalReceivingEntry"
    Layout
        visible when (PurchaseOrderReceiptLineRel.IsLotRequiredAtReceipt)
            Lot
                label is "Lot"
        visible when (PurchaseOrderReceiptLineRel.IsSerialRequiredAtReceipt)
            Serial
                label is "Serial"
        visible when (PurchaseOrderReceiptLineRel.IsLotRequiredAtReceipt)
            Sublot
                label is "Sublot"
        visible when (PurchaseOrderReceiptLineRel.IsBinTracked)
            Bin
                label is "Bin"
                select is WarehouseStorageBinList
                when value changed
                    refresh DerivedWarehouseStorageLocation
        visible when (PurchaseOrderReceiptLineRel.IsAWarehouseLocationItem)
            DerivedWarehouseStorageLocation
                label is "WarehouseStorageLocation"
        visible when (PurchaseOrderReceiptLineRel.IsBinTrackedAndLotTrackedWarehouseItem)
            ManufacturingDate
                label is "ManufacturingDate"
        visible when (PurchaseOrderReceiptLineRel.IsBinTrackedAndLotTrackedWarehouseItem)
            ShelfLife
                label is "ShelfLife"
        visible when (PurchaseOrderReceiptLineRel.IsLotRequiredAtReceipt)
            LotExpirationDate
                label is "ExpirationDate"
        visible when (PurchaseOrderReceiptLineRel.IsBinTrackedAndLotTrackedWarehouseItem)
            DerivedRemainingShelfLife
                label is "RemainingShelfLife"
        visible when (PurchaseOrderReceiptLineRel.IsLotRequiredAtReceipt)
            LotOnHold
                label is "HoldFlag"
        visible when (IsCatchWeightAndNotIsSerialRequiredAtReceipt)
            SecondaryQuantity
                label is "Quantity"
        visible when (IsNotCatchWeightAndNotIsSerialRequiredAtReceipt)
            Quantity
                label is "Quantity"
            paragraph
                PurchaseOrderReceiptLineRel.ReceivedUOM
                    label is "ReceivedUOM"
                PurchaseOrderReceiptLineRel.ReceivedUOM.Description
                    label is "_"
                    display as text
        visible when (IsCatchWeightAndNotIsSerialRequiredAtReceipt)
            Quantity
                label is "StockQuantity"
        visible when (IsCatchWeightAndNotIsSerialRequiredAtReceipt)
            PurchaseOrderReceiptLineRel.Item.StockUOM
                label is "StockUOM"
        visible when (Bin.WarehouseStorageLocation entered)
            display as text
                header2 of "WarehouseStorageLocationDetails"
                paragraph
                    Bin.WarehouseStorageLocation.WarehouseZone
                paragraph
                    Bin.WarehouseStorageLocation.WarehouseZoneComponent
                paragraph
                    Bin.WarehouseStorageLocation.WarehouseZoneComponent.WarehouseComponentType
                        label is "Zone_Component_Type"
                    Bin.WarehouseStorageLocation.WarehouseZoneComponent.WarehouseAisle
                        label is "Aisle"
                    Bin.WarehouseStorageLocation.Row
