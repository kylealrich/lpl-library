SecurityClassForm is a Form
    title is "SecurityClass"
    Layout
        display as text
            header2 of "_"
            two column distributed
                column1
                    RelUserActionSecurity.SecurityClass
                        no label
                        header1
                        bold
                        raise yellow alert when (RelUserActionSecurity.InActive)
                            mouse over text is "Inactive"
                        raise green alert when (not RelUserActionSecurity.InActive)
                            mouse over text is "Active"
                column2
                    RelUserActionSecurity.DerivedLastChange
                        no label
                        display as tag
                            color of blue
                    paragraph
                        button of "ManageSecurityClass"
                            link is RelUserActionSecurity.ConfigurationConsoleNav
                            display as link
                        visible when (not AssignedToSecurityRole)
                            MissingSecurityWarning
                                no label
                                display as tag
                                    color of red
            paragraph
                RelUserActionSecurity.LPL
                    no label
                    display only
                    use text area of 30 lines
