PortalItemProposalSummary is a Form
    title is "Summary"
    Layout
        display as text
            paragraph
                text of "ThankYouForProposingANewItem"
                    center
                    bold
            blank line
            single column
                RecallNotice
                    label is "ItemProposal#"
                Name
                Description
                    use text area of 2 lines
                RecallDate
                    label is "Date"
            visible when (ProposalItemEntryMethod.Attachment)
                visible when (ItemAttachmentNotEntered)
                    text of "MustAttachProposedItemsSpreadsheetPriorToSubmittingItemProposal"
                        italics
                    text of "UsePreviousToItemAttachmentWorksheetOrViewItemProposalLinkToAttachSpreadsheet"
                        italics
        text of "SelectAnyMenuItemToExit"
            italics
        visible when (UnsubmittedItemProposal)
            text of "ClickTheButtonBelowToSubmitTheItemProposal"
                italics
            button of "SubmitItemProposal"
                action is Pending.SubmitItemProposal
        button of "ViewItemProposal"
            link is MainItemProposalNav
            display as link
