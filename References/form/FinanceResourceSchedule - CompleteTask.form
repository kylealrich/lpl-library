CompleteTask is an ActionForm
    action is CompleteTask
    title is "CompleteTask:<NavigateToThis(ClosePeriodTask).TaskName>"
    Layout
        header3 of "EnterYourActualNumberOfHoursToCompleteThisTask"
        single column
            PrmActualHours
                label is "Effort"
        visible when (TaskClosingLate)
            header3 of "EnterYourReasonForClosingTheTaskLate"
            single column
            visible when (FinanceResource.CloseManagementGroupRel.CloseLateReasonCodeRequired)
                paragraph
                    reason code
                    reason code.Description
                        no label
                        display as text
            PrmLateComment
                label is "Comment"
                use text area of 8 lines
        visible when (TaskRequireSupportingDoco)
            header3 of "YouAreRequiredToAttachSupportingDocumentation"
        visible when (TaskSupportingDocoIsOptional)
            header3 of "AddNotes,Attachment,OrURLForSupportingDocumentation"
        single column
            PrmDialogue
                label is "Notes"
                use text area of 8 lines
            PrmAttachment
                label is "Attachment"
            PrmLinkToDocumentation
                label is "URL"
