KitchenOrderContext is a Form
    Layout
        visible when (IsRecordExists)
            display as text
                four column distributed
                    column1
                        KitchenOrder
                        Company.ItemGroup.RepresentativeText
                    column2
                        Item
                            label is "RecipeItem"
                        Company.DerivedCompanyDisplay
                            label is "InventoryCompany"
                    column3
                        Item.Description
                            label is "Description"
                            display as text
                        InventoryLocation.RepresentativeText
                            label is "InventoryLocation"
                    column4
                        DerivedStatusMessage
                        visible when (KitchenOrderInUseWithoutIDMTemplate)
                            IDMTemplateRequiredMessage
                                no label
                                display as tag
                                    color of blue
                        visible when (HasIDMDocument)
                            button of "View"
                                link is external "<DerivedIDMDocumentLink>"
                                label is "Document"
                                display as link
                        visible when (HasIDMJobError)
                            paragraph
                                IDMStatusMessage
                                    no label
                                    display as tag
                                        color of red
                                button of "View_IDM_Job"
                                    link is IDMJob
                                    display as link
                        visible when (HasZeroCostLinesExists)
                            paragraph
                                ZeroCostLinesMessage
                                    no label
                                    display as tag
                                        color of yellow
