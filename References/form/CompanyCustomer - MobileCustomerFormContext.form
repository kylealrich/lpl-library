MobileCustomerFormContext is a Form
    title is "CustomerFormContext"
    Layout
        three column
            column1
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Customer
                    Customer.Name
                        no label
                        display as text
                paragraph
                    StartDate
            column2
                paragraph
                    SalesRepresentative
                        select is SalesReps
                    SalesRepresentative.Name
                        no label
                        display as text
                paragraph
                    ReceivableDefaultCode
                        label is "DefaultCode"
                        select is DefaultCodes
                    ReceivableDefaultCode.Description
                        no label
                        display as text
                paragraph
                    CreditAnalyst
                        select is CreditAnalyst
                    CreditAnalyst.Name
                        no label
                        display as text
            column3
                paragraph
                    ActiveStatus
                paragraph
                    visible when (OrderEntryCustomerExists)
                        button of "UpdateOrderEntryCustomer"
                            link is OrderEntryCustomerNav
                            display as link
                    visible when (AllowCreateOECustomer)
                        button of "CreateOrderEntryCustomer"
                            action is CreateOrderEntryCustomer
                            display as link
