SabrixClientMainForm is a Form
    title is "Main"
    Layout
        three column distributed
            column1
                header2 of "Input"
                single column
                    CurrencyCode
                    VendorCustomer
                    VendorCustomerName
                    InvoiceDate
                    InvoiceAmount
                    TaxableAmount
                    TaxCodeEntered
                        label is "TaxCode"
                    TaxCodeEntered.Description
                        label is "TaxCodeDescription"
                paragraph
                    InvoiceNumber
                    LineNumber
                        label is "Line#"
                paragraph
                    TransientLineId
                paragraph
                    OriginalInvoiceNumber
                paragraph
                    IsReversed
                        label is "Reversed"
                            left of field
                    visible when (IsReversed)
                        text of "NoTaxInfoIsReturnedIfTrue."
                            bold
                            color of blue
                header2 of "Output"
                single column
                    ReturnedTaxCode
                        show up to 15 characters
                    TaxRate
                paragraph
                    TaxAmount
                single column
                    visible when (WebServiceError)
                        WebServiceError
                            label is "WebServiceError"
                                left of field
                        WebServiceErrorMessage
                            use text area of 40 lines
                            show up to 120 characters
                    visible when (OutputErrorNumberEntered)
                        OutputErrorNumber
                        OutputErrorMessage
                            show up to 30 characters
            column2
                header2 of "ShipTo"
                single column
                    ShipToAddress
            column3
                header2 of "ShipFrom"
                single column
                    ShipFromAddress
                    blank line
                    blank line
                    blank line
                    blank line
                    blank line
                    blank line
                    blank line
                    blank line
        paragraph
            TaxingJurisdiction
                use text area of 1 lines
                show up to 80 characters
        paragraph
            SabrixErrorSeverity
                display as text
            visible when (SabrixErrorSeverity.Severe)
                text of "Error..."
                    bold
                    color of red
        paragraph
            SabrixReturnMessage
                use text area of 2 lines
