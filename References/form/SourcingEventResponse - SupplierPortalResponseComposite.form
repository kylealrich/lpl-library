SupplierPortalResponseComposite is a CompositeForm
    title is "EventResponseForEvent#<SourcingEvent.RepresentativeText>"
    called out actions only
    Actions
        action is Draft.Submit
            action icon is submit
            hide when invalid
        action is Submitted.ModifyResponse
            action icon is edit
            hide when invalid
        action is Submitted.WithdrawResponse
            action icon is undo
            hide when invalid
        action is Withdrawn.ReinstateResponse
            hide when invalid
        action is refresh
    EventResponse is a Panel
        title is "Event"
        form is ManualResponse
    LineResponses is a Panel
        title is "Lines"
        visible when (DisplayBidAmountNoDateNotAmendment)
        mouse over text is "<SourcingEvent.Company.LineResponseText>"
        template is SourcingEvent.SourcingEventLine set
            business class is SourcingEventLineResponse
                list is SupplierLineResponses
    EventLineResponses is a Panel
        title is "Lines"
        visible when (DisplayBidAmountWithDateNotAmendment)
        mouse over text is "<SourcingEvent.Company.LineResponseText>"
        template is SourcingEvent.SourcingEventLine set
            business class is SourcingEventLineResponse
                list is SupplierLineResponsesWithDate
    EventQuestions is a Panel
        title is "Questions"
        visible when (SEQuestionsOldExistNotAmendment)
        template is SourcingEvent.SourcingEventQuestion set
            business class is SourcingEventQuestionResponse
                form is Question
    EventSupplierQuestions is a Panel
        title is "QuestionsSupplier"
        visible when (SEQuestionsNewExistNotAmendment)
        template is SourcingEventSupplierQuestionPortalRel
            business class is SESupplierQuestionResponse
                form is Question
    Attachments is a Panel
        list is SourcingEventResponseAttachment set.Attachments
    AddOnCharges is a Panel
        visible when (HeaderAOCsAndLineResponsesExist)
        list is HeaderAddOnChargeResponseRel.SourcingEventResponseAOCsSupplier
