ScheduleUpdateZonePayablesAndReceivables is a Form
    is primary
    Layout
        single column
            AccountingEntityOption
                label is "<FinanceEnterpriseGroup.AccountingEntityLabel>Option"
            visible when (AccountingEntityOption.Single)
                AccountingEntity
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
            visible when (AccountingEntityOption.Group)
                AccountingEntityGroup
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>Group"
        blank line
        single column
            PeriodOption
        visible when (PeriodOption.SpecifyPeriod)
            two column
                Period
                    select is ClosePeriods
                Period.Date
                    no label
                    display as text
