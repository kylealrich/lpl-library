ContractProposalWizardAction is an ActionForm
    action is CreateFromProposal
    title is "CreateContractLineForContract<Contract>"
    Layout
        single column
            visible when (not ContractLineExists)
                visible when (not ServicePurchaseTypeContract)
                    text of "SelectEitherItemOrService"
                    TransientProposalLine
                        display as horizontal radio buttons
            visible when (TransientProposalLine.Service)
                ItemNumber
                    label is "ItemNumberForService"
                ItemDescription
                    label is "Description"
                ServiceCode
                visible when (ServiceCode.Quantity)
                    LifetimeMaximumQuantity
                        label is "ServiceQuantity"
                BaseCost
                    label is "UnitCost"
                UOM.UnitOfMeasure
                TransientAccount
                    label is "DefaultAccount"
                    compact format
            visible when (ServicePurchaseTypeContract)
                ItemDescription
                    label is "Description"
                ServiceCode
                UOM.UnitOfMeasure
                    label is "UnitOfMeasure"
                visible when (ServiceCode.Quantity)
                    LifetimeMaximumQuantity
                        label is "ServiceQuantity"
                BaseCost
                    label is "UnitCost"
                TransientAccount
                    label is "DefaultAccount"
                    compact format
            visible when (TransientProposalLine.Item)
                ItemDescription
                    label is "Description"
                VendorItem
                UOM.UnitOfMeasure
                    label is "UnitOfMeasure"
                paragraph
                    Manufacturer
                        label is "ManufacturerCode"
                        compact format
                    ManufacturerNumber
                BaseCost
                    label is "UnitCost"
                TransientAccount
                    label is "DefaultAccount"
                    compact format
