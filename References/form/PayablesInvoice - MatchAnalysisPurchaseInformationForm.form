MatchAnalysisPurchaseInformationForm is a Form
    title is "InvoiceSummary"
    Layout
        two column distributed
            column1
                Invoice
                    label is "Invoice"
                    header3
                InvoiceDate
                    label is "InvoiceDate"
                DueDate
                    label is "DueDate"
                Status
            column2
                DerivedInvoiceAmountAndCurrency2
                    label is "InvoiceAmount"
                    header3
                DerivedMatchAmount
                    label is "MatchAmount"
                ReceiptOfInvoiceDate
                    label is "ReceiptDate"
                visible when (ErrorsExists)
                    InvoiceInErrorMessage
                        no label
                        display as tag
                            color of red
