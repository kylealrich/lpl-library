TransferPricingBatchRunOneViewHeader is a Form
    title is "TransferPricingTransaction"
    Layout
        three column distributed
            column1
                TransferPricingBatchRun
                    label is "BatchRun"
                    display as text
                Description
                    display as text
            column2
                paragraph
                    RechargeOption
                        display as text
                    visible when (RechargeOption.RechargeType)
                        TransferPricingType
                            display as text
                    visible when (RechargeOption.Single)
                        TransferPricing
                            display as text
                    visible when (RechargeOption.Group)
                        TransferPricingCustomGroup
                            display as text
                TransactionDate
                    display as text
            column3
                Status
                    display as tag
                        color of gray when (Status.Started)
                        color of blue when (Status.Completed)
                        color of green when (Status.Processed)
                create stamp
                    label is "RunDate_/Time"
                    display as text
