MobileBuyerMessageContext is a Form
    title is "BuyerMessage"
    Layout
        display as text
            paragraph distributed
                PurchaseOrder
                PurchaseOrderReceipt
                    label is "Receipt"
                PurchaseOrderReceiptLine.PurchaseOrderLine.LineNumber
                    label is "Line"
            paragraph
                Status
                    display as tag
                        color of brown when (Status.Unreleased)
                        color of green when (Status.Released)
                visible when (DocumentNumberNumeric entered)
                    DocumentNumberNumeric
                        label is "AdjustmentDocumentNumber"
