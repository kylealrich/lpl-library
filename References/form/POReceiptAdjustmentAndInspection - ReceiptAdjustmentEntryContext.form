ReceiptAdjustmentEntryContext is a Form
    Actions
        action is Unreleased.ReleaseAdjustment
            label is "Release"
            hide when invalid
        navigation is UnreleasedBuyerMessages
            hide when invalid
        action is save
        action is refresh
    Layout
        three column distributed
            column1
                visible when (not DocumentExists)
                    paragraph
                        Company
                            select is POCompanies
                        Company.Name
                            no label
                            display as text
                visible when (DocumentExists)
                    Company.RepresentativeText
                        label is "Company"
                        display as text
                POReceiptAdjustmentAndInspection
                    label is "AdjustmentDocumentNumber"
                    display as text
            column2
                paragraph
                    visible when (not DocumentExists)
                        PurchaseOrderReceipt
                            label is "Receipt"
                            select is POReceiverList
                    visible when (DocumentExists)
                        PurchaseOrderReceipt.PurchaseOrderReceipt
                            label is "Receipt"
                            display as text
                    PurchaseOrderReceipt.ReferenceNumber
                        label is "ReferenceNumber"
                        display as text
            column3
                single column
                    Status
                        display as tag
                            color of green when (Status.Released)
                            color of yellow when (HasUnreleasedBuyerMessages)
                            color of yellow when (not InterfaceReleaseError)
                    visible when (HasUnreleasedBuyerMessages)
                        BuyerMessages
                            no label
                            display as tag
                                color of red
        three column distributed
            DocumentDate
                label is "AdjustmentDate"
            ReferenceNumber
                label is "AdjustmentReferenceNumber"
