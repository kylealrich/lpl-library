SubcontractorCertificationForm is a Form
    is primary
    title is "SubcontractorCertification"
    Layout
        paragraph
            SupplierGroup
        paragraph
            Subcontractor
            Subcontractor.SubcontractorName
                no label
                display as text
        paragraph
            SubcontractorCertification.PayablesCertificationCode
                label is "CertificationCode"
            SubcontractorCertification.PayablesCertificationCode.Description
                no label
                display only
        single column
            SubcontractorCertification.CertificationEffectiveDate
                label is "EffectiveDate"
            CertificationExpirationDate
                label is "ExpirationDate"
            Active
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
