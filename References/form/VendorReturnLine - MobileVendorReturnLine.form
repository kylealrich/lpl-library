MobileVendorReturnLine is a CompositeForm
    title is "Return<VendorReturn>Line<MobileVendorReturnLine>"
    context form is MobileDetailContext
        background is theme color
    Actions
        action is save
            label is "_"
            hide when invalid
    Main is a Panel
        form is MobileMain
    Detail is a MultiListPanel
        visible when (IsDetailRequired)
        list is VendorReturnLineDetailsRel.MobileDetails
            show 3 lines
        list is VendorReturnCancelDetailsRel.MobileCancelDetails
            show 3 lines
    Distributions is a Panel
        visible when (not InventoryItem)
        list is VendorReturnLineDistributionsRel.MobileVendorReturnLineDistributionList
    Comments is a Panel
        list is VendorReturnLineComment set.MobileVendorReturnLineComments
