VendorReturn is an ActionForm
    action is VendorReturn
    title is "VendorReturn"
    Layout
        display as text
            three column distributed
                RecallNotice.RepresentativeText
                paragraph
                    RecallProduct
                    RecallProduct.ProductName
                        no label
                paragraph
                    RecallProductItem
                    RecallProductItem.Description
                        no label
        paragraph
            ActionType
                no label
                display as horizontal radio buttons
        blank line
        visible when (ActionType.Create)
            four column distributed
                Quantity
                Uom
                    no label
            four column distributed
                visible when (Company entered)
                    Company.RepresentativeText
                        label is "CompanyWhereCountWasDone"
                        display as text
                paragraph
                    VendorReturnGroup.InventoryCompany
                        label is "Company"
                    VendorReturnGroup.InventoryCompany.Name
                        no label
                        display as text
                visible when (InventoryLocation entered)
                    InventoryLocation.RepresentativeText
                        display as text
                visible when (InventoryLocation not entered)
                    paragraph
                        VendorReturnGroup.InventoryLocation
                            label is "Location"
                        VendorReturnGroup.InventoryLocation.Name
                            no label
                            display as text
                paragraph
                    VendorReturnGroup.Vendor
                    VendorReturnGroup.Vendor.VendorSearchName
                        no label
                        display as text
            four column distributed
                VendorReturnGroup.VendorLocation
                    label is "PurchaseFromLocation"
                paragraph
                    VendorReturnGroup.PayablesProcessLevel
                        label is "ProcessLevel"
                    VendorReturnGroup.PayablesProcessLevel.Name
                        no label
                        display as text
                paragraph
                    VendorReturnGroup.Buyer
                        label is "Buyer"
                    VendorReturnGroup.Buyer.Employee.PresentationNameSnapshot
                        no label
                        display as text
        visible when (ActionType.Append)
            paragraph
                Quantity
                Uom
                    no label
            paragraph
                PurchasingCompany
                PurchasingCompany.Name
                    no label
                    display as text
            paragraph
                VendorReturn
                    select is OpenReturns
                VendorReturn.Vendor
                    no label
                    display as text
        visible when (ActionType.Associate)
            paragraph
                PurchasingCompany
                PurchasingCompany.Name
                    no label
                    display as text
            paragraph
                VendorReturn
                    select is OpenReturns
                VendorReturn.Vendor
                    no label
                    display as text
            paragraph
                VendorReturnLine
                    label is "LineNumber"
                VendorReturnLine.Item
                    display as text
                VendorReturnLine.ReturnQuantity
                    display as text
        visible when (RecallProductItem.CatchWeight)
            blank line
            paragraph
                CtwSecondaryQty
                    label is "SecondaryQuantity"
                RecallProductItem.Item.SecondaryUOM
                    no label
                    display as text
