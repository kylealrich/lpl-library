FranchiseCharge is a Form
    is primary
    title is "FranchiseCharge"
    Layout
        paragraph
            ChargeType
        paragraph
            Company
            Company.BillingCompany.Name
                no label
                display as text
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
            Description
                no label
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
        paragraph
            Active
        blank line
        three column
            column1
                text of "Options"
                    bold
                Frequency
                ProcessLevel
                TaxableFlag
                    label is "Taxable"
                TaxCode
                BalanceFlag
                    label is "PrintBalanceOnStatement"
                blank line
            column2
                text of "Amounts"
                    bold
                MinimumAmount
                MaximumAmount
                PercentOfSales
                BaseAmount
                InterestRate
                blank line
            column3
                text of "Accounts"
                    bold
                RevenueAccount
                    label is "Sales"
                    compact format
                NoteAccount
                    label is "NoteAsset"
                    compact format
                NoteAccrualAccount
                    label is "NoteAccrual"
                    compact format
                NoteAccrualOffsetAccount
                    label is "NoteAccrualOffset"
                    compact format
                AccrualAccount
                    label is "InterestAccrual"
                    compact format
                AccrualOffsetAccount
                    label is "InterestAccrualOffset"
                    compact format
        visible when (IsSalesType)
            paragraph
                button of "SlidingScale"
                    visible when (not PercentOfSalesEntered)
                    link is SlidingScale
