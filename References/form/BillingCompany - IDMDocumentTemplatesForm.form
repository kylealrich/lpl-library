IDMDocumentTemplatesForm is a Form
    Layout
        header2 of "Templates"
        single column
            paragraph
                ProformaInvoiceDocument
        blank line
        header2 of "IDMDocumentTemplates"
        single column
            paragraph
                BillingInvoiceTemplate
                    select is BillingInvoiceIDMTemplate
                button of "<BillingInvoiceTemplate.Name>"
                    link is external "<BillingInvoiceTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
            paragraph
                InvoiceRegisterTemplate
                    select is InvoiceRegisterIDMTemplate
                button of "<InvoiceRegisterTemplate.Name>"
                    link is external "<InvoiceRegisterTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
            paragraph
                DailyShipmentJournalIDMTemplate
                    select is DailyShipmentJournalTemplate
                button of "<DailyShipmentJournalIDMTemplate.Name>"
                    link is external "<DailyShipmentJournalIDMTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
            paragraph
                CustomerOrderTemplate
                    select is CustomerOrderIDMTemplate
                button of "<CustomerOrderTemplate.Name>"
                    link is external "<CustomerOrderTemplate.RetrieveUrl>"
                        lazy url retrieval
                    display as link
        blank line
        two column
            column1
                header2 of "IDMEmailTemplates"
                paragraph
                    BillingInvoiceEmailTemplate
                        select is BillingInvoiceIDMEmailTemplate
                    button of "<BillingInvoiceEmailTemplate.Name>"
                        link is external "<BillingInvoiceEmailTemplate.RetrieveUrl>"
                            lazy url retrieval
                        display as link
                paragraph
                    InvoiceAndRegisterEmailTemplate
                        select is InvoiceAndRegisterIDMEmailTemplate
                    button of "<InvoiceAndRegisterEmailTemplate.Name>"
                        link is external "<InvoiceAndRegisterEmailTemplate.RetrieveUrl>"
                            lazy url retrieval
                        display as link
                paragraph
                    CustomerOrderEmailTemplate
                        select is CustomerOrderIDMEmailTemplate
                    button of "<CustomerOrderEmailTemplate.Name>"
                        link is external "<CustomerOrderEmailTemplate.RetrieveUrl>"
                            lazy url retrieval
                        display as link
            column2
                header2 of "IDMEmailSubject"
                paragraph
                    BillingInvoiceEmailSubject
                    visible when (BillingInvoiceEmailSubject entered)
                        text of "Sample:<DerivedBillingInvoiceIDMEmailSubject>"
                paragraph
                    InvoiceAndRegisterEmailSubject
                    visible when (InvoiceAndRegisterEmailSubject entered)
                        text of "Sample:<DerivedInvoiceAndRegisterIDMEmailSubject>"
                paragraph
                    CustomerOrderEmailSubject
                    visible when (CustomerOrderEmailSubject entered)
                        text of "Sample:<DerivedCustomerOrderIDMEmailSubject>"
