MainAssignmentForm is a Form
    Layout
        two column distributed
            column1
                paragraph
                    Employee
                    Employee.Employee.Name.PreferredFirstAndLastName
                        no label
                        display as text
                column2
                    paragraph
                        Employee.ProjectLaborSchedule
                            display as text
                        Employee.ProjectLaborSchedule.Description
                            no label
                            display as text
        two column distributed
            column1
                paragraph
                    ProjectAssignment.ProjectRole
                        label is "ProjectRole"
                    ProjectAssignment.ProjectRole.Description
                        no label
                        display as text
            column2
                paragraph
                    Project.ProjectDateRange.BeginDate
                        label is "BeginDate"
                    Project.ProjectDateRange.EndDate
                        label is "EndDate"
        single column
            FinanceCodeBlock
                compact format
            text of "DimensionsSetToBlank:"
                align as label
            FinanceCodeBlockSetBlanks
                no label
