CustomerRepresentativeMessage is a Form
    is primary
    title is "PortalMessage"
    Layout
        paragraph
            CustomerRepresentative
                display only
            CustomerRepresentative.CustomerName
                no label
                display only
        two column
            CreationDateTime
                label is "CreationDate/Time"
                display only
            ReleaseStatus
                display only
        single column
            MessageTitle
                label is "Title"
            MessageText
                label is "Message"
                use text area of 5 lines
        single column
            Priority
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
