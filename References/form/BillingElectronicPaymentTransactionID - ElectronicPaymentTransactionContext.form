ElectronicPaymentTransactionContext is a Form
    Layout
        three column distributed
            column1
                visible when (not RecordExists)
                    BillingElectronicPaymentTransactionID
                        label is "TransactionI\\D"
                    paragraph
                        Company
                            select is Companies
                        Company.Name
                            no label
                            display as text
                visible when (RecordExists)
                    BillingElectronicPaymentTransactionID
                        label is "TransactionI\\D"
                        display as text
                    Company.RepresentativeText
                        label is "Company"
                        display as text
            column2
                ElectronicPaymentAuthorizationCode
                    label is "P\\N\\Ref"
                paragraph
                    Customer
                        select is CustomerContextCompanySelectList
                    Customer.Name
                        no label
                        display as text
            column3
                paragraph
                    InvcPrefix
                        label is "Invoice"
                    InvoiceNumber
                        no label
                CustomerOrder
                    label is "Order"
