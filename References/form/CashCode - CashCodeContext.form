CashCodeContext is a Form
    title is "CashCode"
    Layout
        visible when (RecordExists)
            display as text
                three column distributed
                    column1
                        CashManagementGroup
                        visible when (CashManagementGroup.RequiresApprovalCodesForTransactions)
                            visible when (ApprovalCodeEntered)
                                ApprovalCode.ApprovalDescriptionID
                                    label is "ApprovalCode"
                            visible when (not ApprovalCodeEntered)
                                ApprovalCode
                                    label is "ApprovalCode"
                    column2
                        CashCodeAndDescription
                            label is "CashCode"
                    column3
                        visible when (DefaultPostCompany entered)
                            DefaultPostCompany.RepresentativeText
                                label is "DefaultPostCompany"
                        visible when (DefaultPostCompany not entered)
                            DefaultPostCompany
                        visible when (CompanyCashCodeDoesNotExistsForDefaultCompany)
                            text of "CompanyCashCodeRelationshipDoesNotExistForDefaultPostCompany"
                                color of red
                        visible when (CompanyCashCodeInactiveForDefaultCompany)
                            text of "CompanyCashCodeRelationshipIsInactiveForDefaultCompany"
                                color of red
