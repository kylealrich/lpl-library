MobileRecallProductItem is a Form
    title is "Item"
    Actions
        action is save
        action is previous record
        action is next record
        action is refresh
    Layout
        display as text
            single column
                RecallNotice
                RecallNotice.Name
                    label is "NoticeName"
                RecallProduct.ProductName
        visible when (not RecallProductItemExists)
            single column
                Item
                VendorItem
            paragraph
                ManufacturerInformation.Manufacturer
                    compact format
                ManufacturerInformation.ManufacturerNumber
            single column
                GTIN
                HibccUpn
                NDC
        visible when (RecallProductItemExists)
            display as text
                single column
                    Item
                    VendorItem
                paragraph
                    ManufacturerInformation.Manufacturer
                    ManufacturerInformation.ManufacturerNumber
                single column
                    GTIN
                    HibccUpn
                    NDC
