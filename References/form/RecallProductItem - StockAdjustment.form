StockAdjustment is an ActionForm
    action is StockAdjustment
    title is "StockAdjustment"
    Layout
        display as text
            three column distributed
                RecallNotice.RepresentativeText
                paragraph
                    RecallProduct
                    RecallProduct.ProductName
                        no label
                paragraph
                    RecallProductItem
                    Description
                        no label
        visible when (IsItemMaster)
            paragraph
                Quantity
                Item.StockUOM
                    no label
                    display as text
        visible when (not IsItemMaster)
            paragraph
                Quantity
                    label is "ReduceQuantityBy"
                TranUom
                    no label
        paragraph
            ActionType
                no label
                display as horizontal radio buttons
        visible when (ActionType.Create)
            three column distributed
                paragraph
                    InventoryDocumentGroup.InventoryCompany
                    InventoryDocumentGroup.InventoryCompany.Name
                        no label
                        display as text
                paragraph
                    InventoryDocumentGroup.InventoryLocation
                        label is "InventoryLocation"
                    InventoryDocumentGroup.InventoryLocation.Name
                        no label
                        display as text
            three column distributed
                InventoryDocumentGroup.Bin
                    label is "Bin"
                TranDate
                    label is "AdjustmentDate"
                PostDate
        visible when (ActionType.Append)
            two column distributed
                paragraph
                    InventoryDocumentGroup.InventoryCompany
                    InventoryDocumentGroup.InventoryCompany.Name
                        no label
                        display as text
                paragraph
                    InventoryDocumentGroup.InventoryLocation
                        label is "InventoryLocation"
                    InventoryDocumentGroup.InventoryLocation.Name
                        no label
                        display as text
            two column distributed
                InventoryDocumentGroup.Bin
                    label is "Bin"
                InventoryDocumentGroup.InventoryTransaction
                    label is "Document"
                    select is InventoryAdjustmentDocuments
        visible when (CatchWeight)
            blank line
            paragraph
                CtwSecondaryQty
                    label is "SecondaryQuantity"
                Item.SecondaryUOM
                    no label
                    display as text
