MobileUIBankStatementContextForm is a Form
    title is "BankStatement"
    Layout
        visible when (false)
            AssignLocalPostingPeriod
        three column table
            column1 of 50%
                BankStatement
                    label is "StatementNumber"
                    display as text
                PostingStatus
                    display as text
                StatementStatus
                    display as text
                EntryMethod
                    display as text
            column2 of 50%
                CashManagementAccount
                    display as text
                CashManagementAccount.Title
                    label is "AccountDescription"
                    display as text
                StatementCurrency
                    display as text
                visible when (not CanUpdateStatement)
                    StatementDate
                        display as text
                visible when (CanUpdateStatement)
                    StatementDate
                        display as text
        single column
            visible when (NetLineAmountOutOfBalance)
                StatementOutOfBalanceErrorMessage
                    no label
                    display as tag
                        color of red
            visible when (BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
            visible when (BudgetEditInFailure)
                text of "BudgetsExceeded;CouldNotReleaseAllDistributions"
                    bold
                    color of red
