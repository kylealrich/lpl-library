RequisitionDashboardContext is a Form
    restrict action Unreleased.UpdateRequisitionLineFillOrKill
    Layout
        display as text
            three column distributed
                column1
                    paragraph
                        button of "<Requisition>"
                            link is RequisitionView
                            label is "Requisition"
                            display as link
                        Requester.Employee.FirstLastNameID
                            label is "Requester"
                        button of icon.profile
                            link is MobileRequesterInformation
                        visible when (HasIDMDocument)
                            button of "View"
                                link is external "<DerivedIDMDocumentLink>"
                                    lazy url retrieval
                                display as link
                    Company.DerivedCompanyNameID
                        label is "Company"
                    FromCompanyLocation.FromCompany.DerivedCompanyNameID
                        label is "FromCompany"
                column2
                    paragraph
                        ApprovalValue
                            label is "RequisitionTotal"
                        BaseCurrencyCode.Currency
                            no label
                    RequestingLocation.RequestingLocationNameID
                    FromCompanyLocation.FromLocation.DerivedNameID
                        label is "FromLocation"
                column3
                    paragraph
                        DerivedStatusMessage
                            label is "Status"
                        visible when (LineErrorsExist)
                            LineErrorsMessage
                                no label
                                display as tag
                                    color of red
                            button of "View"
                                link is RequisitionLineErrorLink
                                display as link
                    RequestingLocation.InventoryTransactionType
                        display as text
                    RequisitionDescription
                        label is "Description"
                    QuoteNumber
