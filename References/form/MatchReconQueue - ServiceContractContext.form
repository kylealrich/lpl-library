ServiceContractContext is a Form
    Layout
        visible when (not MatchWorkInvoiceDetailExists)
            visible when (not View.MatchComplete)
                paragraph
                    visible when (not SmartReconUIV2)
                        button of "RefreshWorkFiles"
                            action is ResetWorkFiles
                        text of "FileRefreshRequired"
                    visible when (SmartReconUIV2)
                        button of "ShowExceptions"
                            action is ResetWorkFiles
                        text of "MustClickOnShowExceptionsToBegin"
            paragraph
                button of "Invoice<Invoice>"
                    link is PayablesInvoiceLink
                    display as link
            paragraph
                button of "Contract<PayablesInvoice.ServiceContract>"
                    link is ContractInformation
                    display as link
        visible when (MatchWorkInvoiceDetailExists)
            four column distributed
                column1
                    button of "Invoice<Invoice>"
                        link is PayablesInvoiceLink
                        display as link
                    button of "Contract<PayablesInvoice.ServiceContract>"
                        link is ContractInformation
                        display as link
                column2
                    paragraph
                        text of "Chargeback:"
                            left align
                        button of "<ChargebackYesOrNo>"
                            action is SetChargeback
                            display as link
                        visible when (Chargeback)
                            ChargebackReason
                                label is "Reason"
                                display as text
                            ChargebackReference
                                no label
                                display as text
                    visible when (not DisplayLineChargebackAmountService)
                        ServiceContractDiscrepancy
                            label is "Discrepancy(IncludesWithinTolerance)"
                            display as text
                    visible when (DisplayLineChargebackAmountService)
                        LineChargebackAmountService
                            label is "LineChargebackAmount"
                            display as text
                    visible when (CreateMatchReconMessage)
                        text of "ChargebackReconOption:"
                            left align
                        button of "<ChargebackReconOption>"
                            action is SetChargebackReconOption
                            display as link
                column3
                    Buyer.Employee.PresentationNameSnapshot
                        label is "Buyer"
                        display as text
                    button of icon.mail
                        link is "mailto:<Buyer.EmailAddress>"
                column4
                    visible when (not View.MatchComplete)
                        visible when (ReviewedLinesExist)
                            paragraph
                                button of "<ReviewedMsg>"
                                    link is ReviewedServiceContractLinesLink
                                    display as link
                                button of "Undo"
                                    action is MarkAllLinesAsNotReviewed
                    visible when (HasMessageForWorkList)
                        button of "<DerivedMessageLinkTitle>"
                            link is SmartReconMatchInvoiceMessageCommentNavigation
                            display as link
        visible when (View.MatchComplete)
            three column distributed
                column1
                    DerivedMatchStatus
                        label is "MatchStatus"
                        display as text
                column2
                    PayablesInvoice.MatchLevel
                    display as text
                column3
                    PayablesInvoice.MatchDate
                    display as text
        paragraph distributed
            visible when (PayablesInvoice.HasOpenMatchInvoiceMessages)
                text of "*MessagesExist"
                    bold
            visible when (PayablesInvoice.DisplayCreateInProgress)
                text of "<PayablesInvoice.CreateDetailsProcessingInBackgroundMsg>"
                    bold
                    italics
                    color of red
            visible when (PayablesInvoice.DisplayMatchInProgress)
                text of "<MatchProcessingInBackgroundMsg>"
                    bold
                    italics
                    color of red
            visible when (PayablesInvoice.DisplayMatchInProgressWithAsyncFailure)
                text of "<MatchProcessingInBackgroundAsyncFailureMsg>"
                    bold
                    italics
                    color of red
            visible when (PayablesInvoice.BudgetEditInProgress)
                text of "BudgetEditsInProgress"
                    bold
                    color of red
