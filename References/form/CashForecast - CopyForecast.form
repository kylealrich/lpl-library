CopyForecast is an ActionForm
    action is CopyForecast
    title is "CopyForecast"
    Layout
        single column
            FromCashForecast
                display as text
        blank line
        header2 of "NewCashForecastValues"
        single column
            NewCashForecast
                label is "CashForecast"
            NewDescription
                label is "Description"
                use text area of 3 lines
        paragraph
            NewForecastDateRange.Begin
                label is "ForecastStartDate"
            text of "-"
            NewForecastDateRange.End
                label is "EndDate"
        single column
            NewRollingForecast
                label is "RollingForecast"
            visible when (NewRollingForecast)
                NewRollingFrequency
                    label is "RollingFrequency"
                    display as horizontal radio buttons
                    display as required when (true)
            NewSimulated
                label is "Simulated"
        visible when (CashManagementGroup.CashForecastApprovalRequired)
            single column
                NewApprovalCode
                    label is "ApprovalCode"
                    select is ApprovalCodesWithLevels
                    display as required when (CashManagementGroup.CashForecastApprovalRequired)
        paragraph
            visible when (FromCashForecast.HaveBuiltForecast)
                CopyForecastData
            visible when (CopyForecastData)
                visible when (FromCashForecast.IsActiveOrClosed)
                    CopyOption
