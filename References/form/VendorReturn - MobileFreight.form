MobileFreight is a Form
    title is "Freight"
    Layout
        header3 of "OriginalFreightCredit"
        single column
            OriginalFreightCreditAmount
                label is "Amount"
            OriginalFreightCreditAccount
                label is "Account"
                compact format
        header3 of "ReturnToVendorFreightCredit"
        single column
            ReturnToVendorFreightCreditAmount
                label is "Amount"
            ReturnToVendorFreightCreditAccount
                label is "Account"
                compact format
        header3 of "HandlingCharge"
        single column
            HandlingAmount
                label is "Amount"
            HandlingAccount
                label is "Account"
                compact format
        header3 of "ReplaceFreightCharge"
        single column
            ReplacementFreightAmount
                label is "Amount"
            AddOnCharge
                label is "Add\\-\\OnCostCode"
                select is MobileActiveAddOnCostCodes
