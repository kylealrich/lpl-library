DerivedActivityBalanceContextForm is a Form
    title is "ActivityBalances"
    Layout
        two column
            StudentActivityAccount
                label is "Activity"
                select is StudentActivityAccountSelectList
            Description
        two column
            StudentActivityClosedPeriod
                label is "Period"
        single column
            DerivedBeginningBalance
                label is "BeginningBalance"
        paragraph
            DerivedPeriodReceipts
                label is "Receipts"
            DerivedPeriodDisbursements
                label is "Disbursements"
            DerivedPeriodTransfers
                label is "Transfers"
        paragraph
            DerivedPeriodEndingBalance
                label is "EndingBalance"
            visible when (HasClosedTransactionDetails)
                button of "TransactionDetails"
                    link is ClosedTransactionDetails
