LeaseAdditionAndAdjustments is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is LeaseAdditionAndAdjustmentsContext
        background is theme color
    Actions
        action is Unreleased.Release
            hide when invalid
        action is Released.Renewal
            hide when invalid
        action is Unreleased.Test
            hide when invalid
        action is Released.Unrelease
            hide when invalid
        action is Unreleased.ReleaseRenewal
            hide when invalid
        action is Released.LeaseAdjustments
            label is "LeaseAdjustment"
            hide when invalid
        action is Released.Close
            hide when invalid
        action is Released.Terminate
            hide when invalid
        action is Modify.RecalculateAmortization
            hide when invalid
        action is Modify.ReleaseModification
            hide when invalid
        action is Modify.ResetModification
            hide when invalid
        action is Transfer.ResetTransfer
            hide when invalid
            valid when (CanAllowResetTransfer)
        action is Impairment.ReleaseImpairment
            hide when invalid
        action is Impairment.ResetImpairment
            hide when invalid
        action is LeaseAdjustments.ResetAdjustment
            hide when invalid
        action is LeaseAdjustments.ReleaseAdjustment
            hide when invalid
        action is Termination.ResetTermination
            hide when invalid
        action is Termination.ReleaseTermination
            hide when invalid
        action is Unreleased.GASBPresentValueCalculation
            label is "PresentValue"
            mouse over text is "GASB_Present_Value_Calculation"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Unreleased.Create
            action icon is create
            label is "_"
            valid when (not IsARenewal)
        action is Unreleased.CreateLeaseFromTemplate
            action icon is add
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is Unreleased.Delete
            action icon is delete
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Amounts is a Panel
        form is Amounts
    LeaseFund is a Panel
        title is "Funds"
        visible when (FundAccounting)
        list is LeaseFund set.LeaseFunds
    Payment is a Panel
        form is Payment
    Options is a Panel
        form is ExtensionOptions
    PaymentSchedule is a Panel
        list is AllLeasePaymentsRel.PaymentSchedules
    Classification is a Panel
        title is "<DerivedTabTitle>"
        visible when (not IsMonthToMonthRenewal)
        form is FAS13
    Assets is a MultiListPanel
        visible when (not IsARenewal)
        list is AssetsRel.LeaseAssetList
        list is LeaseToAssetRel.AssetsToAttach
            visible when (not DontAllowAssetAttachment)
    RenewalAssets is a Panel
        title is "Assets"
        visible when (IsARenewal)
        list is AssetsRel.RenewalLeaseAssets
    NonLeaseComponents is a Panel
        list is LeaseExecutoryCostCodesRel.LeaseExecutoryCostCodesInlineList
    Amortization is a Panel
        visible when (HasAmortizationSchedule)
        list is LeaseCurrencyPaymentPeriodBalance set.LeaseAmortization
    StraightLine is a Panel
        visible when (ShowStraightLineSchedule)
        list is LeasePaymentDetail set.StraightLineExpense
    Adjustment is a Panel
        visible when (IsTerminatedNotOperating)
        list is AssetAdjustment set.AssetAdjustments
    Disposal is a Panel
        visible when (IsTerminatedNotOperating)
        list is AssetDisposal set.primary
    Transactions is a Panel
        visible when (HasLeaseTransactions)
        list is LeaseTransaction set.LeaseAccrualTransactions
    Modifications is a Panel
        visible when (HasLeaseModifications)
        list is LeaseModificationRel.LeaseModificationList
    CompanyTransfer is a Panel
        visible when (IsTransferInProcess)
        list is LeaseTransferRel.LeaseCompanyTransferList
    Impairments is a Panel
        visible when (HasLeaseImpairments)
        list is LeaseImpairmentRel.LeaseImpairments
    LeaseAdjustments is a Panel
        visible when (HasLeaseAdjustments)
        list is LeaseAdjustmentRel.LeaseAdjustments
    Subleases is a Panel
        visible when (not Status.Unreleased)
        list is SubleaseRel.SubleaseFEGList
    Attachments is a DashBoardPanel
        use 12 column grid
        Dates is a Panel
            span 4 columns
            list is LeaseDatesRel.LeaseDateCard
        Comments is a Panel
            span 4 columns
            list is LeaseCommentRel.LeaseCommentCard
        Documents is a Panel
            span 4 columns
            list is LeaseAttachmentRel.LeaseAttachmentCard
