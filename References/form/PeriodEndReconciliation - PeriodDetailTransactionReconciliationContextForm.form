PeriodDetailTransactionReconciliationContextForm is a Form
    title is "SavedDetailTransactionReconciliation"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        visible when (LevelType.Group)
            paragraph
                ReconciliationGroup
                    display only
                ReconciliationGroupMethod
                    display as text
        visible when (LevelType.NonAccount)
            paragraph
                NonAccountReconciliation
                    display only
        visible when (IsAccountWithinGroup)
            paragraph
                ParentPeriodEndReconciliation.ReconciliationGroup
                    display only
        visible when (LevelType.Account)
            paragraph
                ReconciliationCodeBlock
                    display as text
                ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
                Currency
                    no label
                    display as text
        paragraph
            PeriodEndReconciliation.GeneralLedgerClosePeriod
                label is "Period"
                display as text
                compact format
            PeriodEndReconciliation.GeneralLedgerClosePeriod.PeriodName
                no label
                display as text
        blank line
