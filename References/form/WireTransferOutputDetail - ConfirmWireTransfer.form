ConfirmWireTransfer is an ActionForm
    action is ConfirmWireTransfer
    Layout
        header3 of "EnterWireTransferConfirmationInformation"
        single column
            PrmCashLedgerUpdateAction
                label is "Action"
                display as horizontal radio buttons
            visible when (PrmCashLedgerUpdateAction.Accepted)
                PrmPostingDate
                    label is "PostingDate"
            PrmConfirmationDate
                label is "ConfirmationDate"
            PrmConfirmationNumber
                label is "ConfirmationNumber"
        visible when (PrmCashLedgerUpdateAction.Accepted)
            paragraph
                PrmConfirmationAmount
                    label is "ConfirmationAmount"
                TransactionCurrency
                    no label
                    display as text
        single column
            PrmConfirmationComment
                label is "Comment"
                use text area of 3 lines
