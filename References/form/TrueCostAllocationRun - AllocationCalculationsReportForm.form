AllocationCalculationsReportForm is a SummaryForm
    title is "AllocationCalculationReport"
    First Page Header
        Layout
            TrueCostAllocationRun.AllocationRun.CurrentDate
                label is "CurrentDateAndTime"
                right align
    Layout
        header3 of "AllocationCalculation"
            center
        blank line
        two column
            column1
                TrueCostAllocationRun.AllocationRun.AllocationRun
                    label is "AllocationRun"
                    display when blank
                TrueCostAllocationRun.AllocationRun.AllocationControl
                    label is "AllocationControl"
                    display when blank
                paragraph
                    TrueCostAllocationRun.AllocationRun.AllocationControl.Calendar
                        label is "Calendar"
                        display when blank
                TrueCostAllocationRun.AllocationRun.Allocation
                    label is "Allocation"
                    display when blank
                TrueCostAllocationRun.AllocationRun.AllocationGroup
                    label is "AllocationGroup"
                    display when blank
                TrueCostAllocationRun.AllocationRun.CurrencyTable
                last TrueCostRunParameterRel.SourceBalanceOption
                    label is "SourceBalanceOption"
                    display when blank
                TrueCostAllocationRun.AllocationRun.AllocationSnapshot
                    label is "ExpenseSnapshotName"
            column2
                TrueCostAllocationRun.AllocationRun.AllocationPeriod
                    label is "AllocationPeriod"
                    display when blank
                TrueCostAllocationRun.AllocationRun.PostingDate
                    label is "PostingDate"
                    display when blank
                paragraph
                    TrueCostAllocationRun.AllocationRun.FromStep
                        label is "FromStep"
                        display when blank
                    TrueCostAllocationRun.AllocationRun.ToStep
                        label is "ToStep"
                        display when blank
                TrueCostAllocationRun.AllocationRun.Status
                    label is "Status"
                    display when blank
                TrueCostAllocationRun.AllocationRun.ErrorCount
                    label is "WarningCount"
                    display when blank
                create stamp
                    label is "RunDate/Time"
                TrueCostAllocationRun.AllocationRun.UseCapacityLedger
                    label is "IsCapacity"
        form is AllocationTransactionDetailsForReportRel.TrueCostAllocationListingReportForm
        form is AllocationTransactionDetailsForReportCurrencyRel.TrueCostAllocationListingCurrencySummaryForReportForm
