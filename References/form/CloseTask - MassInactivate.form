MassInactivate is an ActionForm
    action is MassInactivate
    title is "MassInactivate"
    Layout
        header3 of "EnterACloseTaskSelectionToDefineWhichActiveTasksShouldBeInactivated"
        paragraph
            PrmCloseTaskSelection
                label is "CloseTaskSelection"
            PrmCloseTaskSelection.Condition
                no label
                display as text
        paragraph
            PrmTaskLevel
                label is "TaskLevel"
        blank line
        visible when (PrmTaskLevel.Summary)
            text of "Note:SummaryTasksAndItsDescendantsWillBeInactivated"
                italics
        visible when (PrmTaskLevel.Detail)
            text of "Note:WillNotInactivateSelectedTasksThatAreAPrerequisiteForAnotherActiveTask"
                italics
