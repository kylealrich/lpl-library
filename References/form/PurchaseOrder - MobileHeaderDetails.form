MobileHeaderDetails is a Form
    title is "Main"
    Layout
        paragraph
            MobileCompanyDisplay
                label is "Company"
                display as text
        paragraph
            Vendor
                select is MobileVendorSelectSearch
            Vendor.VendorName
                no label
                display as text
        paragraph
            Buyer
                select is MobileBuyerSelect
                show up to 5 characters
            Buyer.Employee.FirstLastName
                no label
                display as text
        paragraph
            PurchaseOrderDate
                label is "PurchaseOrderDate"
            DefaultDeliveryDate
                label is "DeliveryDate"
        paragraph
            PurchaseFromLocation
                label is "PurchaseFrom"
                select is MobileNonRemitToActivePurchaseFromLocations
                show up to 5 characters
            PurchaseFromLocation.VendorName
                no label
                display as text
        paragraph
            ShipToLocation
                label is "ShipTo"
                select is MobileInventoryLocations
                show up to 5 characters
            ShipToLocationName
                no label
                display as text
        single column
            Reference1
            Reference2
        visible when (BudgetEditInProgress)
            text of "BudgetEditsInProgress"
                bold
                color of red
        visible when (BudgetEditFailure)
            text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                bold
                color of red
        visible when (LineErrorsExist)
            paragraph
                text of "LineErrorsExist"
                    bold
                    color of red
                button of "PurchaseOrderLineErrors"
                    visible when (LineErrorsExist)
                    link is PurchaseOrderLineErrorLink
