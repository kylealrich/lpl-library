RequesterProposalContext is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        visible when (ContractExists)
            single column
                RepresentativeText
                    label is "Proposal"
                    display as text
        visible when (not ContractExists)
            text of "EnterDesiredFieldsAndSaveToCreateProposalHeader"
                bold
                color of green
        visible when (ProposalContractQuestionsExistUnsubmitted)
            three column
                button of "Respond_toQuestions"
                    link is RequesterProposalQuestionsNav
                visible when (UnansweredProposedRequiredQuestionsExist)
                    text of "UnansweredRequiredQuestionsExist"
                        bold
                        color of red
                    text of "RequiredQuestionsMustBeAnsweredBeforeProposalCanBeSubmitted"
                        bold
                        color of blue
        visible when (ProposalContractQuestionsExistSubmitted)
            single column
                button of "ViewQuestions"
                    link is RequesterProposalQuestionsNav
        visible when (ProposedPreviouslySubmitted)
            single column
                text of "ProposedContractReturnedForMoreInformation"
                    bold
                    color of blue
