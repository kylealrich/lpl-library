ContactForm is a Form
    Layout
        single column
            visible when (Contact entered)
                Contact
                    no label
            visible when (EmailAddress entered)
                paragraph
                    EmailAddress
                        no label
                    button of icon.mail
                        visible when (EmailAddress entered)
                        link is "mailto:<EmailAddress>"
            visible when (PhoneNumber entered)
                paragraph
                    PhoneNumber.InternationalPrefix
                        no label
                    PhoneNumber.SubscriberNumber
                        no label
                    button of icon.phone
                        visible when (PhoneNumber entered)
                        link is "tel:<PhoneNumber>"
            visible when (MobileNumber.MobilePhoneNumber entered)
                paragraph
                    MobileNumber.MobilePhoneNumber.InternationalPrefix
                        no label
                    MobileNumber.MobilePhoneNumber.SubscriberNumber
                        no label
                    button of icon.mobile
                        visible when (MobileNumber entered)
                        link is "tel:<MobileNumber>"
            visible when (CustomerStreetLineAddressEntered)
                CustomerRel.PostalAddress.DisplayAddressCommaSeparated
                    no label
            visible when (DerivedAddressOfCustomer entered)
                DerivedAddressOfCustomer
                    no label
            visible when (SalesRepresentative entered)
                SalesRepresentative.RepresentativeText
                    label is "SalesRepresentative"
                        header4
                        bold
                    header4
            visible when (DisplayCustomerRepresentative)
                button of "CustomerRepresentatives"
                    link is CustomerRepresentativeNav
                    display as link
