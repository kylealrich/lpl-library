CreateAmortization is an ActionForm
    action is CreateAmortization
    Layout
        two column distributed
            column1
                PrmReferenceNumber
                PrmDescription
                paragraph
                    TransactionDate
                        label is "TransactionDate"
                        display as text
                    PostingDate
                        label is "PostingDate"
                        display as text
                paragraph
                    TransactionAmount
                        label is "DetailAmount"
                        display as text
            column2
                paragraph
                    PrmStartPeriod
                        label is "StartPeriod"
                        compact format
                    PrmStartPeriod.PeriodName
                        no label
                        display as text
                paragraph
                    PrmEndPeriod
                        label is "EndPeriod"
                        compact format
                    PrmEndPeriod.PeriodName
                        no label
                        display as text
                paragraph
                    PrmCatchUpPeriod
                        label is "CatchUpPeriod"
                        compact format
                    PrmCatchUpPeriod.PeriodName
                        no label
                        display as text
                paragraph
                    PrmPeriodTerm
                    PrmAmortizationSpread
        header3 of "AmortizationExpenseAccount"
        paragraph
            PrmAmortizationExpenseAccount
                compact format
        single column
            text of "-or-"
        paragraph
            PrmAllocationCode
                select is PercentCashAllocationCodes
            PrmAllocationCode.Description
                no label
                display as text
        blank line
        single column
            PrmDistributionDescription
