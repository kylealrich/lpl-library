RemittanceSelectionComposite is a CompositeForm
    title is "RemittanceSelection"
    context form is RemittanceSelectionForm
    Actions
        action is Selected.Generate
            action icon is transfer
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Selected.Create
            action icon is create
            label is "_"
        action is save
            label is "_"
        action is Selected.Delete
            label is "_"
        action is refresh
            label is "_"
    CustomerDrafts is a Panel
        list is SelectedCustomerDraftRel.RemittanceSelectionSelected
            helper list is AvailableCustomerDraftRel.RemittanceSelectionAvailable
                action is Accepted.Select
