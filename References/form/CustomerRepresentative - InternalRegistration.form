InternalRegistration is a Form
    title is "Registration"
    Layout
        visible when (not BillingRecvExtEntityEnabled)
            single column
                LoginName
                    label is "*_UserName"
                Password
                    label is "*_Password"
                    hidden entry
                ConfirmPassword
                    label is "*_ConfirmPassword"
                    hidden entry
        header2 of "PrimaryContact"
        single column
            MainContact.GivenName
                label is "*_FirstName"
            MainContact.FamilyName
                label is "*_LastName"
        paragraph
            TelephoneNumber.InternationalPrefix
                label is "*_PhoneNumber"
            TelephoneNumber.SubscriberNumber
                no label
            TelephoneNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                italics
        paragraph
            EmailAddress
                label is "*_EmailAddress"
            text of "ContactWillBeSetToReceiveEmailNotifications;UseUpdateProcessToChangeFlag"
                italics
