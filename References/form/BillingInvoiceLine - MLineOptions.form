MLineOptions is a Form
    title is "LineOptions"
    Layout
        header2 of "SalesData"
        paragraph
            Territory
            Territory.Description
                no label
                display as text
        paragraph
            SalesRepresentative
                label is "SalesRepresentative1"
            SalesRepresentative.Name
                no label
                display as text
        single column
            CommissionRate1
                label is "Commission"
        paragraph
            SalesRepresentative2
                label is "SalesRepresentative2"
            SalesRepresentative2.Name
                no label
                display as text
        two column distributed
            CommissionRate2
                label is "Commission"
            CommissionSplitPercentage
                label is "Split"
        header2 of "Accounts"
        visible when (not AllowMultipleSalesAccountEntry)
            paragraph
                SalesAccount
                    compact format
        visible when (AllowMultipleSalesAccountEntry)
            paragraph
                BlankField
                    label is "SalesAccount"
                    display as text
                button of "MultipleSalesAccountEntry"
                    link is SalesAccountEntry
                    display as link
        paragraph
            COGSAccount
                label is "CostOfGoodsAccount"
                compact format
        paragraph
            OffsetAccount
                compact format
        header2 of "Discounts"
        two column distributed
            NoCharge
                label is "NoCharge"
                    left of field
            OrderDiscount
                label is "Discountable"
                    left of field
        two column distributed
            EnteredDiscount
                label is "AddOnDiscount"
            PriceDiscountCode
                label is "DiscountCode"
                display as text
        header2 of "Tax"
        paragraph
            TaxExemptCode
                label is "TaxExempt"
        paragraph
            TaxCode
            TaxCode.Description
                no label
                display as text
        visible when (TaxOutputDueAccount)
            paragraph
                EntityTaxCodeRel.TaxOutputDueAccount
                    label is "TaxAccount"
                    display only
                    compact format
        visible when (TaxOutputAccount)
            paragraph
                EntityTaxCodeRel.TaxOutputAccount
                    label is "TaxAccount"
                    display only
                    compact format
        visible when (IsHSNSACCodeEnabled)
            paragraph
                HSNSACCode
                HSNSACCode.Description
                    no label
                    display as text
        header2 of "ReasonCode"
        paragraph
            ReasonCode
            ReasonCode.Description
                no label
                display as text
