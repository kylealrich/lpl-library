InternalSearchCustomers is a SearchForm
    title is "SearchCustomers"
    Layout
        two column
            CustomerRepresentative
            CustomerName
        two column
            CustomerRepresentativeStatus
        two column
            ReceivableCompany
            Customer
        single column
            TaxIdGroup.TaxId
        two column
            MailingAddress.Municipality
                label is "City"
            MailingAddress.StateProvince
                label is "State"
        single column
            MailingAddress.PostalCode
        single column
            first CustomerRepresentativeContact set.MainContact.FamilyName
                label is "MainContactLastName"
