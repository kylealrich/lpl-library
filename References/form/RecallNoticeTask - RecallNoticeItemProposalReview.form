RecallNoticeItemProposalReview is a CompositeForm
    title is "ReviewNewItemProposal"
    context form is ResponderItemReviewerContext
        background is theme color
    Actions
        action is ApproveProposedItem
            hide when invalid
            valid when (OpenProposedItemTask)
        action is ApproveProposedItemPendingTrial
            hide when invalid
            valid when (OpenProposedItemTask)
        action is RejectProposedItem
            hide when invalid
            valid when (OpenProposedItemTask)
        action is AskAQuestion
            label is "AskCoordinatorAQuestion"
            hide when invalid
        navigation is NewItemProposalReport
            hide when invalid
        action is save
            label is "_"
    NewProposedItems is a Panel
        visible when (RecallNotice.DisplayItemDetailsOnForm)
        list is RecallProductRel.ResponderRecallNoticeTaskProposedItemList
    ProposerAttachments is a Panel
        list is SupplierAttachmentsRel.PortalSummaryRecallReferences
    ReviewerCommentsAndAttachments is a Panel
        title is "ReviewerCommentsAndAttachments<AttachmentCount>"
        list is RecallNoticeTaskAttachment set.ItemReviewerRecallNoticeTaskAttachmentList
    QAndAForum is a Panel
        title is "Q&A"
        visible when (HasTaskOwnerQandA)
        list is TaskOwnerQandARel.RecallNoticeTaskQAndAList
    ReviewerQuestionsAnswers is a Panel
        title is "ReviewerQuestionAnswers"
        list is ResponseToRecallNoticeTaskQuestionRel.QuestionAnswerRecall
