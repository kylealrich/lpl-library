PayGroupUpdate is an ActionForm
    action is PayGroupUpdate
    Layout
        two column
            Company
                select is Companies
            Company.Name
                no label
                display as text
        three column
            valid when (not AllProcessLevels)
                ProcLevel
                    label is "ProcessLevel"
                    select is ProcessLevels
            valid when (not AllProcessLevels)
                ProcLevel.Name
                    no label
                    display as text
            AllProcessLevels
        blank line
        two column
            PayGroup
                select is PayGroups
            PayGroup.Name
                no label
                display as text
        blank line
        single column
            UpdateOption
                label is "Update"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PayGroupUpdateReport_RDG
            column2 of 25%
                PayGroupUpdateReport_XPT
