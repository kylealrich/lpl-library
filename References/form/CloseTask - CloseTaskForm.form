CloseTaskForm is a CompositeForm
    is primary
    title is "<TaskName>"
    Actions
        action is Reassign
            hide when invalid
        action is LinkToPrerequisiteTask
            hide when invalid
        action is Rename
            hide when invalid
        action is Attachment
            hide when invalid
        action is ActivateDetail
            hide when invalid
        action is ActivateSummary
            hide when invalid
        action is InactivateDetail
            hide when invalid
        action is InactivateSummary
            hide when invalid
        action is save
            label is "_"
        action is refresh
            label is "_"
    AtAGlanceDetail is a Panel
        title is "AtAGlance"
        visible when (IsDetailLevel)
        form is CloseTaskAtAGlance
    Processing is a Panel
        form is CloseTaskDefaulting
    Details is a Panel
        visible when (HasChild)
        list is CloseTask descendants.AtAGlanceTreeView
    Approvals is a Panel
        visible when (RequiresApproval)
        list is ApprovalCode.ApprovalCodeResourceRel.ApproversForClose
    Prerequisite is a Panel
        visible when (HasPrerequisite)
        list is CloseTaskPrerequisite set.CloseTaskPrerequisiteList
    Dependency is a Panel
        visible when (HasDependency)
        list is DependentTaskRel.CloseTaskDependencyList
    ProcessDocuments is a Panel
        visible when (HasAttachment)
        list is ProcessDocumentationRel.ProcessDocumentationList
    Reconciliations is a Panel
        visible when (IsTaskForReconciliationAccountNotInConsolidatedGroup)
        list is ReconciliationAccountNotInConsolidatedGroupRel.AccountListForCloseManagement
    ConsolidatedReconciliations is a Panel
        visible when (IsTaskForReconciliationConsolidatedGroup)
        list is ReconciliationAccountConsolidatedGroupRel.ConsolidatedAccountListForCloseManagement
    NonAccountReconciliations is a Panel
        visible when (IsTaskForReconciliationNonAccount)
        list is ReconciliationNonAccountRel.NonAccountListForCloseManagement
    CurrentSchedule is a Panel
        visible when (Scheduled)
        list is ScheduledRel.ScheduleInProcessList
    Owner is a Panel
        visible when (TaskOwner entered)
        form is CloseTaskOwner
    TeamOwner is a Panel
        visible when (TaskOwner not entered)
        list is FinanceTeamMemberRel.TeamMemberDrillList
