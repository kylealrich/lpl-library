InvoiceLinePurchaseOrderLine is a Form
    title is "InvoiceDetailInformation"
    Layout
        display as text
            two column
                Company
                Company.Name
                    label is "CompanyName"
            two column
                Vendor
                Vendor.VendorName
                    label is "VendorName"
            paragraph
                Invoice
                Suffix
                    no label
                PayablesInvoice.CancelSequence
                    no label
            single column
                PayablesInvoice.AuthorityCode
                    label is "AuthorityCode"
                PayablesInvoice.Operator
                    label is "InvoiceEnteredBy"
            paragraph
                CompanyPurchaseOrder.PurchaseOrder
                    label is "PurchaseOrder"
            single column
                LineNumber
                    label is "Line"
            blank line
            visible when (OnContract)
                single column
                    ProcurementGroup
                        label is "ContractGroup"
                two column
                    CmContract
                        label is "Contract"
                    CmContractRel.Name
                        label is "ContractName"
                single column
                    MfgContract
                        label is "ManufacturerContract"
            two column
                InvoiceDate
                PurchorderRel.PurchaseOrderDate
            two column
                Location
                Location.Name
                    label is "LocationName"
            two column
                RequestingLocation
                RequestingLocationRel.Name
                    label is "RequestingLocationName"
            two column
                Item
                paragraph
                    ItemDescription
                        label is "ItemDescription"
                    ItemmastRel.Description2
                        no label
            visible when (HasUNSPSC)
                paragraph
                    UNSPSC
                        label is "UNSPSCCode"
                        compact format
            visible when (HasCommodityCode)
                header4 of "CommodityCode"
                two column
                    CommodityCode
                    CommodityCode.Description
                        label is "CommodityCodeDescription"
            header4 of "-"
            visible when (ExpenseInvoice)
                single column
                    InvoiceAmount
            visible when (PurchaseOrderInvoice)
                three column
                    InvoiceUnitCost
                        label is "InvoiceCost"
                    CurrencyCode
                        label is "TransactionCurrency"
                    PurchaseOrderUnitCost
                        label is "PurchaseOrderCost"
            visible when (PurchaseOrderInvoice)
                five column
                    InvoiceBaseUnitCost
                        label is "BaseInvoiceCost"
                        display as text
                    Company.GeneralLedgerCompany.Currency
                        label is "BaseCurrency"
                    MatchedQuantity
                        label is "InvoiceQuantity"
                    VpriUom
                        no label
                    InvoiceAmount
                        label is "BaseInvoiceAmount"
            two column
                PayablesDiversityCode
                    label is "DiversityCode"
                PayablesDiversityCode.Description
                    label is "DiversityCodeDescription"
            single column
                ReturnNumber
            two column
                Buyer
                BuyerRel.Name
                    label is "BuyerName"
            two column
                BuyerRel.PhoneNumber
                    label is "BuyerPhone"
                BuyerRel.EmailAddress
                    label is "BuyerEmailAddress"
