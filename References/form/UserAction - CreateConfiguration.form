CreateConfiguration is an ActionForm
    action is CreateConfiguration
        on completion navigate to ConfigConsoleNav
    Layout
        section of General
            single column
                BusinessClassParam
                ActionParam
                    select is ActionConfigurationSelect
                visible when (ActionParam.StateName entered)
                    ActionParam.StateName
            header3 of "AdjustDefaultLabel"
            single column
                text of "Action_LabelWillDefaultFromThe_ActionNameAbove.YouCanOverride."
                    bold
                    align as label
            paragraph
                HasExplicitLabelParam
                    label is "OverrideDefaultActionLabel"
                visible when (HasExplicitLabelParam)
                    ExplicitLabelParam
                        no label
        section of Required
            paragraph
                valid when (BusinessClassParam.ImplementsEffectiveDated)
                    EffectiveDateRequiredParam
                valid when (BusinessClassParam.ImplementsAuditing)
                    ReasonCodeRequiredParam
                    ActionCommentRequiredParam
        section of EntranceRules
            single column
                EntranceRulesParam
                    no label
        section of ExitRules
            single column
                ExitRulesParam
                    no label
