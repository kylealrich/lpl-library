StudentPaidReceiptsContextForm is a Form
    title is "<mode>Receipt"
    Layout
        visible when (StudentActivityReceipt.ReceiptExists)
            four column
                StudentActivityReceipt
                    label is "ReceiptNumber"
                StudentActivityReceipt.Status
                    display only
                visible when (StudentActivityReceipt.Status.Entered)
                    button of "DeleteReceipt"
                        action is DeleteReceipt
                    button of "Release"
                        action is Release
        three column
            StudentActivityDistrict
                label is "SchoolDistrict"
            StudentActivitySchool
                label is "School"
                display only
        three column
            StudentActivityReceipt.ReceiptAmount
            StudentActivityReceipt.ReceiptDate
            visible when (StudentActivityReceipt.CreatedFromBatch)
                StudentActivityReceipt.StudentActivityReceiptBatch
                    label is "BatchNumber"
                    display only
        three column
            StudentActivityReceipt.ReferenceNumber
            StudentRecord
                label is "StudentId"
        three column
            StudentActivityReceipt.TotalDetailAmount
            visible when (not StudentActivityReceipt.Status.Entered)
                button of "PrintReceipt"
                    link is PrintActivityReceipt
        visible when (not StudentActivityReceipt.ReceiptExists)
            header3 of "DetailInformation"
            paragraph
                StudentActivityReceipt.SchoolActivityAccount
                    compact format
                    select is SchoolActivityAccountSelectList
                StudentActivityReceipt.SchoolActivityAccount.Description
                    no label
                    display only
            single column
                StudentActivityReceipt.Amount
        visible when (StudentActivityReceipt.LinkedToDeposit)
            three column
                StudentActivityReceipt.StudentActivityBankTransaction
                    label is "DepositNumber"
                    display only
                StudentActivityReceipt.StudentActivityBankTransaction.TransactionDate
                    label is "DepositDate"
                    display only
                visible when (StudentActivityReceipt.Deposited)
                    button of "ReturnPayment"
                        action is StudentActivityReceipt.Deposited.ReturnedPayment
                visible when (StudentActivityReceipt.Status.Returned)
                    three column
                        StudentActivityReceipt.ReturnNumber
                        StudentActivityReceipt.ReturnDate
