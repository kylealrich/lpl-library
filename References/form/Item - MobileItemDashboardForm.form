MobileItemDashboardForm is a CompositeForm
    title is "Item"
    context form is MobileItemDashboardContext
    implements DashBoardView
        show context form on top
    restrict action Create
    restrict action CopyItem
    restrict action RequestNewItem
    restrict action RequestUpdateItem
    restrict action Delete
    restrict action BuildTextIndex
    restrict action UpdateManufacturerInfo
    restrict action CalculateItemUsage
    restrict action Delete
    Actions
        action is refresh
            label is "_"
    VendorItems is a Panel
        list is AllVendorItemRel.MobileVendorItemsForItem
    LocationBalances is a Panel
        list is AllActiveInventoriedItemLocationsRel.ItemStockOnHandByLocation
    ParLocations is a Panel
        list is AllItemLocationsRel.ItemsAtParLocation
    ActiveContractLines is a Panel
        list is ItemContractLinesRel.MobileContractItemContractLines
    PurchaseOrderLines is a Panel
        list is InventoryOrNonStockPurchaseOrderLineRel.MobileListPurchaseOrderLinesForAnItem
    UnitsOfMeasure is a Panel
        list is ItemUOM set.MobileItemUOMsForView
