CustomerPortalRegistration is a Form
    title is "Registration"
    disable field options
    Layout
        header2 of "EnterLoginInformation"
        single column
            LoginName
                label is "*_UserName"
            Password
                label is "*_Password"
                hidden entry
            ConfirmPassword
                label is "*_ConfirmPassword"
                hidden entry
        blank line
        header2 of "EnterInformationAboutYourself"
        single column
            MainContact.GivenName
                label is "*_FirstName"
            MainContact.FamilyName
                label is "*_LastName"
        paragraph
            TelephoneNumber.InternationalPrefix
                label is "*_PhoneNumber"
            TelephoneNumber.SubscriberNumber
                no label
            TelephoneNumber.Extension
                label is "Ext"
            text of "(InternationalPrefix,PhoneNumber,Extension)"
                italics
        paragraph
            EmailAddress
                label is "*_EmailAddress"
        blank line
        paragraph
            text of "Don't_have_an_email_address?_Create_one_here:"
            button of "CreateEmailAddress"
                link is external "<CustomerGroup.CustomerEmailHelpLink>"
                display as link
        single column
            text of "*__=_Required"
        single column
            AcceptTerms
                label is "AcceptTerms_andConditions_asShownBelow"
                display as required
            CustomerGroup.TermAndCondition
                no label
                display as text
                use text area of 15 lines
        visible when (false)
            paragraph
                LoginName
                Password
                CustomerGroup
                ConfirmPassword
                MainContact
                EmailAddress
                TelephoneNumber
        captcha control
