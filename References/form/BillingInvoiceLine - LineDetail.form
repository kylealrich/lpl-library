LineDetail is a Form
    restrict action Create
    restrict action InterfaceCreate
    restrict action Delete
    Actions
        action is Delete
            hide when invalid
        action is save
            hide when invalid
    Layout
        three column distributed
            display as text
                column1
                    paragraph
                        BillingInvoice.InvoicePrefix
                            label is "Invoice"
                        BillingInvoice.ConditionalInvoiceNumber
                            no label
                        BillingInvoiceLine
                            label is "Line"
                    LineType
                    paragraph
                        Location
                        Location.Name
                            no label
                    paragraph
                        ReasonCode
                        ReasonCode.Description
                            no label
                    paragraph
                        Territory
                        Territory.Description
                            no label
                column2
                    paragraph
                        SalesRepresentative
                            label is "SalesRepresentative1"
                        SalesRepresentative.Name
                            no label
                    CommissionRate1
                        label is "Commission"
                    paragraph
                        SalesRepresentative2
                            label is "SalesRepresentative2"
                        SalesRepresentative2.Name
                            no label
                    CommissionRate2
                        label is "Commission"
                    CommissionSplitPercentage
                        label is "Split"
                column3
                    CustomerOrder
                        label is "OrderNumber"
                    WarehouseShipment
                        label is "ShipmentNumber"
                    FinalInvoice
                        label is "OrderLineFinalInvoice"
                    paragraph
                        BillingInvoice.CustomerOrderLineRel.first PurchaseOrderLineSourcesRel.PurchaseOrder
                            label is "PO/DropShipPONumber"
                        BillingInvoice.CustomerOrderLineRel.first PurchaseOrderLineSourcesRel.PurchaseOrder.PORelease
                            no label
                        BillingInvoice.CustomerOrderLineRel.first PurchaseOrderLineSourcesRel.PurchaseOrder.POCode
                            no label
