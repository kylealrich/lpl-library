MMAHSMonitoringControlNotificationForm is a Form
    title is "MonitoringControl"
    Layout
        paragraph
            NotifyOnError
                label is "SendEmailOnError?"
        visible when (NotifyOnError)
            two column
                NotifyTo
                    label is "To"
                NotifyCC
                    label is "CC"
                NotifyBCC
                    label is "BCC"
                NotifyFrom
                    label is "From"
            single column
                NotifySubject
                    label is "Subject"
                text of untranslatable:"Note:_Provide_Instructions_regarding_actions_to_take."
                    italics
                NotifyBody
                    label is "Body"
                text of untranslatable:"Bookmark_the_target_view_and_paste_the_link_below."
                    italics
                ScreenBookmarkLink
                    label is "BookmarkLink"
        paragraph
            SendNtfyPushOnError
                label is "SendNtfyPushNotificationOnError?"
        visible when (SendNtfyPushOnError)
            single column
                NtfyPushTopicCode
                    label is "SubscribedTopicCode"
                NtfyPushBody
                    label is "AdditionalInfo_(Under_150_characters)"
