ChangeOrderContext is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        display as text
            four column distributed
                ContractGroup.RepresentativeText
                Contract.RepresentativeText
                ContractVersion
            four column distributed
                ChangeOrderStatus
                visible when (SubcontractorEntered)
                    ChangeOrderSubcontractor.SubName
                        label is "Subcontractor"
                visible when (EnteredByRequester)
                    paragraph
                        RequesterName
                            label is "CreatedBy"
                        visible when (ChangeOrderRequester.Employee.EmployeeWorkPhoneExists)
                            button of icon.phone
                                link is "tel:<ChangeOrderRequester.Employee.EmployeeWorkTelephone>"
                        visible when (ChangeOrderRequester.Employee.EmployeeWorkEmailAddressExists)
                            button of icon.mail
                                link is "mailto:<ChangeOrderRequester.Employee.EmployeeWorkEmailAddress>"
                visible when (EnteredBySupplier)
                    ChangeOrderSupplier.RepresentativeText
                        label is "CreatedBy"
                    paragraph
                        ChangeOrderSupplierContact.MainContact.FirstAndLastName
                            label is "Name"
                        visible when (ChangeOrderSupplierContact.TelephoneNumberEntered)
                            button of icon.phone
                                link is "tel:<ChangeOrderSupplierContact.TelephoneNumber>"
                        visible when (ChangeOrderSupplierContact.EmailAddressEntered)
                            button of icon.mail
                                link is "mailto:<ChangeOrderSupplierContact.EmailAddress>"
                visible when (Contract.UseCommitments)
                    Contract.CreateCommitments
                        label is "CommitmentMethod"
            visible when (CanDisplayBudgetWarningMessages)
                three column distributed
                    text of "ChangeOrderWillCauseBudgetToBeExceeded;SeeBudgetErrorMessages"
                        color of red
