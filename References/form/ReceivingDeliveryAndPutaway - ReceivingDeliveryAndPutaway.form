ReceivingDeliveryAndPutaway is an ActionForm
    action is ReceivingDeliveryAndPutaway
    Layout
        two column
            PrlCompany
                label is "Company"
            PrlCompany.Name
                no label
                display as text
        blank line
        single column
            text of "IfNoFiltersAreSpecified,AllUndeliveredItemsReceivedWillPrint"
        blank line
        header2 of "ReceivingFilters"
        paragraph
            FromLocation
                label is "ReceivingLocation"
            FromLocation.Name
                no label
                display as text
        single column
            Receipt
                label is "ReceiptNumber"
        single column
            CurrentUserFl
                label is "CurrentUser"
        blank line
        header2 of "SourceRecordFilters"
        paragraph
            PlsOperCompany
                label is "RequestingCompany"
            PlsOperCompany.Name
                no label
                display as text
        paragraph
            PlsReqLocation
                label is "RequestingLocation"
            PlsReqLocation.Name
                no label
                display as text
        single column
            BoPrintFl
                label is "PrintBackorders"
            PrintType
                label is "PrintTickets"
        blank line
        visible when (PrlCompany.UseIDM)
            header2 of "PrinterOption"
            single column
                paragraph
                    IDMPrinter
                    IDMPrinter.Description
                        no label
                        display as text
        blank line
        header2 of "M\\S\\C\\MArrivalTracking"
        single column
            MSCMArrivalFl
                label is "UpdateArrivalForM\\S\\C\\M"
        blank line
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ReceivingDeliveryAndPutawayReport_RDG
                POIEReceivingDeliveryTicketsReport_RDG
                POIEPurchaseOrderPutAwayReport_RDG
            column2 of 25%
                ReceivingDeliveryAndPutawayReport_XPT
                POIEReceivingDeliveryTicketsReport_XPT
                POIEPurchaseOrderPutAwayReport_XPT
