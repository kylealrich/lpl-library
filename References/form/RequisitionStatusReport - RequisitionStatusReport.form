RequisitionStatusReport is an ActionForm
    action is RequisitionStatusReport
    Layout
        header2 of "Main"
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            ReqLocation
                label is "RequestingLocation"
                show up to 8 characters
            ReqLocation.Name
                no label
                display as text
        text of "\\or"
            bold
        ReportGroup
            label is "ReportGroup"
        ApprovedFl
            label is "UnapprovedRequisitionsOnly"
            show up to 8 characters
        paragraph
            FrCreateDate
                label is "FromCreateDate"
            ToCreateDate
                label is "ToCreateDate"
        header3 of "SelectionCriteria"
        text of "Requesters"
            header4
        paragraph
            Requester.Requester[1]
                no label
                select is ActiveRequesters
                show up to 8 characters
            Requester.Requester[2]
                no label
                select is ActiveRequesters
                show up to 8 characters
            Requester.Requester[3]
                no label
                select is ActiveRequesters
                show up to 8 characters
        paragraph
            Requester.Requester[4]
                no label
                select is ActiveRequesters
                show up to 8 characters
            Requester.Requester[5]
                no label
                select is ActiveRequesters
                show up to 8 characters
            Requester.Requester[6]
                no label
                select is ActiveRequesters
                show up to 8 characters
        text of "Vendors"
            header4
        paragraph
            Vendor.Vendor[1]
                no label
                select is ActiveVendors
            Vendor.Vendor[2]
                no label
                select is ActiveVendors
            Vendor.Vendor[3]
                no label
                select is ActiveVendors
        paragraph
            Vendor.Vendor[4]
                no label
                select is ActiveVendors
            Vendor.Vendor[5]
                no label
                select is ActiveVendors
            Vendor.Vendor[6]
                no label
                select is ActiveVendors
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                RequisitionStatusReportReport_RDG
            column2 of 25%
                RequisitionStatusReportReport_XPT
