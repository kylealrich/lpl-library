OrderEntryOrderCommentForm is a Form
    is primary
    title is "OrderLineComment"
    Layout
        three column distributed
            display as text
                Company.RepresentativeText
                CustomerOrderLine
                    label is "Line"
                CustomerOrderLine.Item
                    label is "Item"
        header2 of "_"
        three column distributed
            paragraph
                OrderEntryOrderComment
                    label is "OrderEntryOrderComment"
            paragraph
                PrintCode
                    label is "PrintType"
            paragraph
                Pick
                    label is "Pick"
                Invoice
                    label is "Invoice"
        single column
            CommentTitle
                label is "CommentTitle"
            paragraph
                visible when (HasAttachment)
                    Attachment.Title
                        label is "AttachmentTitle"
                Attachment.File
        paragraph
            CommentText
