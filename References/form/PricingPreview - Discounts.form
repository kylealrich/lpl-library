Discounts is a Form
    Layout
        display as text
            five column distributed
                column1
                    text of "Description"
                        bold
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[1].InvoiceDescription entered)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[1].InvoiceDescription
                            no label
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[2].InvoiceDescription entered)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[2].InvoiceDescription
                            no label
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[3].InvoiceDescription entered)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[3].InvoiceDescription
                            no label
                column2
                    text of "ApplyToGross"
                        bold
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[1].ApplyToGross)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[1].ApplyToGross
                            no label
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[2].ApplyToGross)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[2].ApplyToGross
                            no label
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[3].ApplyToGross)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[3].ApplyToGross
                            no label
                column3
                    text of "Percentage"
                        bold
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[1].Percent entered)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[1].Percent
                            no label
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[2].Percent entered)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[2].Percent
                            no label
                    visible when (DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[3].Percent entered)
                        DiscountCode.PriceDiscountCodeAccountArray.PriceDiscountCodeAccountGroup[3].Percent
                            no label
                    text of "Total"
                        bold
                column4
                    text of "Amount"
                        bold
                    visible when (not IsBaseCurrency)
                        visible when (DiscountsArray.DiscountAccountGroup[1].DscAmt entered)
                            DiscountsArray.DiscountAccountGroup[1].DscAmt
                                no label
                        visible when (DiscountsArray.DiscountAccountGroup[2].DscAmt entered)
                            DiscountsArray.DiscountAccountGroup[2].DscAmt
                                no label
                        visible when (DiscountsArray.DiscountAccountGroup[3].DscAmt entered)
                            DiscountsArray.DiscountAccountGroup[3].DscAmt
                                no label
                        visible when (DiscountAmount entered)
                            DiscountAmount
                                no label
                                display as text
                    visible when (IsBaseCurrency)
                        visible when (DiscountAmountCurrency1 entered)
                            DiscountAmountCurrency1
                                no label
                        visible when (DiscountAmountCurrency2 entered)
                            DiscountAmountCurrency2
                                no label
                        visible when (DiscountAmountCurrency3 entered)
                            DiscountAmountCurrency3
                                no label
                        visible when (DiscountAmountCurrency entered)
                            DiscountAmountCurrency
                                no label
                                display as text
