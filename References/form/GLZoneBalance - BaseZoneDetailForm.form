BaseZoneDetailForm is a Form
    title is "BaseZoneBalance"
    Layout
        single column
            visible when (EntityZoneBalancing)
                GLZoneBalance.BaseZoneAccountingUnit
            visible when (Dim1ZoneBalancing)
                GLZoneBalance.BaseZoneFinanceDimension
            GLZoneBalance.BaseZoneAccount
        blank line
        three column
            text of "Debit"
            text of "Credit"
            text of "Currency"
        two column
            BaseZoneAmount.TransactionAmount
                label is "TransactionAmount"
                display only
            GLZoneBalance.Currency
                no label
                display only
        two column
            BaseZoneAmount.FunctionalAmount
                label is "FunctionalAmount"
                display only
            AccountingEntity.FunctionalCurrency
                no label
                display only
        visible when (AlternateCurrencyExists)
            two column
                BaseZoneAmount.AlternateAmount
