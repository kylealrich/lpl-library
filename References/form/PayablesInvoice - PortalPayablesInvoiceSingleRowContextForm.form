PortalPayablesInvoiceSingleRowContextForm is a Form
    title is "Invoice"
    Layout
        display as text
            four column distributed
                column1
                    DerivedVendorNameID
                        header3
                    Invoice
                        header3
                column2
                    InvoiceDate
                        header3
                    DueDate
                        header3
                column3
                    paragraph
                        DerivedInvoiceAmountAndCurrency2
                            label is "InvoiceAmount"
                            header3
                        visible when (DisplayErrorWarning)
                            ErrorsExistMessage
                                no label
                                header3
                                display as tag
                                    color of red
                    paragraph
                        button of "ViewInvoiceDocument"
                            visible when (InvoiceImageEntered)
                            view first PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
                            display as link
                        button of "<DerivedDocumentManagementButtonText>"
                            valid when (DocumentManagementButtonValid)
                            visible when (DisplayDocumentMgmtButton)
                            link is external "<DerivedInvoiceURL>"
                                lazy url retrieval
                            display as link
                column4
                    visible when (IsAPurchaseOrderInvoice)
                        DerivedTotalAmount
                            label is DerivedRemainingAmountLabel
                            header3
                        DerivedDifferenceAmount
                            label is "DifferenceAmount"
                            header3
        paragraph
            visible when (HasInterEntityRelationExist)
                IsInterEntityRelationMsg
                    no label
                    display as tag
                        color of yellow
