StatementReconciliationContext is a Form
    Layout
        two column
            column1
                paragraph
                    CashLedgerReconciliationStatement.StatementNumber
                        label is "Statement"
                    CashLedgerReconciliationStatement.StatementSuffix
                    CashLedgerReconciliationStatement.LineNumber
            column2
                paragraph
                    Description
                        display as text
        paragraph
            ReconciliationDate
                label is "Date"
                display as text
            Status
                display as text
        paragraph
            Function
                display as text
        paragraph
            ReconciliationAmount
                label is "Amount"
                display as text
            ReconciliationBalance
                label is "ReconciledAmount"
                display as text
        two column
            paragraph
                TransactionNumber
                    label is "Transaction"
                    display as text
                BankTransactionCode
                    label is "TransactionCode"
                    display as text
                BankTransactionCode.Description
                    no label
                    display as text
        paragraph
            CashCode
                display as text
            CashCode.Description
                no label
                display as text
        header2 of "_"
            underline color of black
        paragraph
            OverrideCashCode
                label is "OverrideCashCode"
            OverrideCashCode.Description
                no label
                display as text
