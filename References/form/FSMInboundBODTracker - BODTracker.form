BODTracker is a Form
    is primary
    title is "BODTracker"
    Actions
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is refresh
            label is "_"
        action is Resend
            label is "Resend"
            hide when invalid
        action is Restart
            label is "Restart"
            hide when invalid
    Layout
        two column
            column1 of 50%
                FSMInboundBODTracker
                    label is "BOD"
                    display as text
                Verb
                    display as text
                Status
                    display as text
                BODDocumentID
                    label is "DocumentID"
                    display as text
                BODID
                    display as text
                visible when (FinanceEnterpriseGroup entered)
                    FinanceEnterpriseGroup
                        display as text
                visible when (RunGroup entered)
                    RunGroup
                        display as text
                visible when (Vendor entered)
                    Vendor
                        display as text
                BODXML
                    display only
            column2 of 50%
                Direction
                    display as text
                Noun
                    display as text
                DerivedOriginator
                    label is "Originator"
                    display as text
                BODAccountingEntity
                    label is "AccountingEntity"
                    display as text
                BODVariationID
                    label is "VariationID"
                    display as text
                visible when (ErrorMessage entered)
                    ErrorMessage
                        display as text
                visible when (Company entered)
                    Company
                        display as text
                visible when (Invoice entered)
                    Invoice
                        display as text
                visible when (Customer entered)
                    Customer
                        display as text
                visible when (BODLocation entered)
                    BODLocation
                        label is "Location"
                        display as text
