BankStatementTotalForm is a CompositeForm
    is primary
    title is "BankStatementTotal"
    context form is BankStatementTotalContext
        background is theme color
    Balance is a Panel
        title is "Transactions"
        visible when (TransactionType.Balance)
        list is BankStatementLineByAccountRel.BankStatementLineTotalDetail
    Activity is a Panel
        title is "Transactions"
        visible when (TransactionType.Activity)
        list is BankStatementLineByCategoryRel.BankStatementLineTotalDetail
