AssetInterfaceForm is a Form
    is primary
    title is "AssetInterface"
    restrict action Create
    Layout
        paragraph
            Company
            Company.GeneralLedgerCompany.Name
                no label
                display as text
        paragraph
            AssetTemplate
                select is ValidTemplatesRel.AssetTemplates
            AssetTemplate.Description
                no label
                display as text
        paragraph
            InvoiceAndPurchaseOrderInformation.InvoiceCompany
                label is "InvoiceCompany"
            InvoiceAndPurchaseOrderInformation.Vendor
            InvoiceAndPurchaseOrderInformation.PayablesInvoice
            button of "<InvoiceAndPurchaseOrderInformation.PayablesInvoice.Invoice>"
                visible when (HasInvoice)
                link is PayablesInvoiceLink
        paragraph
            AssetProject
                compact format
        paragraph
            ItemQuantity
                label is "Quantity"
            TransactionItemCost
                label is "Cost"
            TransactionItemTax
                label is "Tax"
        two column
            Combine
            AssetGroup
        two column
            AssetDescription
            TagNumber
        two column
            PurchaseDate
            InServiceDate
        two column
            Currency
            visible when (FromProjects)
                PostingDate
                    label is "WIP_/ClearingPostingDate"
                    display only
        paragraph
            HoldAsset
        header3 of "Item"
        two column
            column1
                ItemNumber
                    label is "Item"
                ModelNumber
                InvoiceAndPurchaseOrderInformation.PurchaseOrder
                InvoiceAndPurchaseOrderInformation.PurchaseOrderLine
            column2
                Description
                SerialNumber
                LocationDetail
                    select is ActiveAssetLocationDetails
                BarCode
        header3 of "TemplateOverrides"
        paragraph
            AssetAccountingUnit
                label is "DefaultTransactionDimensions"
                compact format
        paragraph
            DepreciationExpenseProject
                label is "DepreciationExpenseProject"
                compact format
        three column
            AssetLocation
                label is "Location"
            AssetDivision
                label is "Division"
            AssetType
                compact format
            AssetAccountingUnitGroup
                label is "AssetDimensionGroup"
            AssetAccountGroup
                label is "AccountGroup"
            AssetCategory
                label is "Category"
            visible when (AssetGuidelineClassesExists)
                AssetGuidelineClass
                    label is "GuidelineClass"
        paragraph
            WorkInProcess
            TaxExempt
            Simulated
            Used
