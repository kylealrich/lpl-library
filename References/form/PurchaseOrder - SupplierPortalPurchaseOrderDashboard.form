SupplierPortalPurchaseOrderDashboard is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Actions
        action is refresh
    Layout
        display as text
            two column grid
                column1
                    DisplayShortPurchaseOrderAndRevision
                        label is "PurchaseOrder"
                    Company.RepresentativeText
                    Vendor.RepresentativeText
                    Buyer.Employee.Name.PreferredFirstAndLastName
                        label is "Buyer"
                    PurchaseFromLocation.RepresentativeText
                    visible when (HasReference1)
                        Reference1
                column2
                    POTotalCurrency
                        label is "PurchaseOrderTotal"
                    PurchaseOrderDate
                    DerivedPurchaseOrderStatus
                        label is "Status"
                    paragraph
                        visible when (PurchaseOrderExists)
                            button of icon.profile
                                link is BuyerNav
                            button of icon.mail
                                visible when (Buyer.Employee.EmployeeWorkEmailAddressExists)
                                link is "mailto:<Buyer.Employee.EmployeeWorkEmailAddress>"
                            button of icon.phone
                                visible when (Buyer.Employee.EmployeeWorkPhoneExists)
                                link is "tel:<Buyer.Employee.EmployeeWorkTelephone>"
                    ShipToLocation.RepresentativeTextForPO
                        label is "ShipToLocation"
                    visible when (HasReference2)
                        Reference2
