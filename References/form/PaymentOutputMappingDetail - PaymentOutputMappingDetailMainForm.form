PaymentOutputMappingDetailMainForm is a Form
    is primary
    title is "PaymentOutputMappingDetail"
    Layout
        paragraph
            PaymentOutputMapping
            PaymentOutputMapping.Description
        single column
            MappingType
                display as horizontal radio buttons
            visible when (MappingType.Field)
                OverrideFieldName
                Field
                visible when (IsUserField)
                    check control
                        checked state is UsingExpression
                        check action is AddExpression
                        uncheck action is RemoveExpression
                        label is "<AddExpressionCheckControlLabel>"
            visible when (MappingType.Literal)
                LiteralName
                LiteralValue
                    label is "Value"
            visible when (MappingType.Blank)
                BlankName
