BuyerMessageEntry is a Form
    use for action CreateManualMessage
    use for action Unreleased.UpdateManualMessage
    Layout
        three column distributed
            column1
                visible when (not RecordExists)
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                visible when (RecordExists)
                    Company.DerivedCompanyNameID
                        label is "Company"
                        display as text
            column2
                visible when (not RecordExists)
                    paragraph
                        Buyer
                        Buyer.Employee.PresentationNameSnapshot
                            no label
                            display as text
                visible when (RecordExists)
                    Buyer.Employee.FirstLastNameID
                        label is "Buyer"
                        display as text
            column3
                PurchaseOrderBuyerMessage.MessageDate
                    label is "MessageDateAndTime"
                    display as text
        three column distributed
            Document
            PurchaseOrderReceipt.PurchaseOrder
                label is "PurchaseOrder"
                display as text
            Status
                display as text
        three column distributed
            PurchaseOrderReceipt
                label is "Receipt"
                select is ReceiversForAllLocationsAndManualBuyerMessage
            PurchaseOrderReceiptLine
                label is "Line"
                select is ReceivingLines
        display as text
            paragraph
                PurchaseOrderLineRel.Item
                    label is "Item"
                PurchaseOrderLineRel.Description
                PurchaseOrderLineRel.ItemType
                    label is "ItemType"
        display as text
            two column distributed
                column1
                    header2 of "UnitCost"
                    paragraph
                        PurchaseOrderLineRel.EnteredUnitCost
                            label is "UnitCost"
                        PurchaseOrderLineRel.VendorPriceUOM
                            no label
                column2
                    header2 of "Quantities"
                    paragraph
                        PurchaseOrderLineRel.Quantity
                            label is "Ordered"
                        PurchaseOrderLineRel.EnteredBuyUOM
                            no label
                        PurchaseOrderLineRel.ReceivedQuantity
                            label is "Received"
                        PurchaseOrderLineRel.MatchedQuantity
                            label is "Approved"
        header2 of "Comments"
        paragraph distributed
            PurchaseOrderBuyerMessageCommentArray.PurchaseOrderBuyerMessageComment[1].Comment
                label is "1"
            PurchaseOrderBuyerMessageCommentArray.PurchaseOrderBuyerMessageComment[2].Comment
                label is "2"
            PurchaseOrderBuyerMessageCommentArray.PurchaseOrderBuyerMessageComment[3].Comment
                label is "3"
            PurchaseOrderBuyerMessageCommentArray.PurchaseOrderBuyerMessageComment[4].Comment
                label is "4"
