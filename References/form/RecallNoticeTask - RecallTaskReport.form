RecallTaskReport is a SummaryForm
    title is "_"
    First Page Header
        Layout
            visible when (RecallGroup.HasReportLogo)
                single column
                    RecallGroup.ReportLogo.File
                        no label
                        display as image
                header2 of "_"
    Page Header
        Layout
            header2 of "_"
                underline color of black
            single column
                text of "Notice#<RecallNotice>:_<RecallNotice.Name>"
                    header2
                    left align
            header2 of "_"
            blank line
    Page Footer
        Layout
            two column
                text of "<current timestamp>"
                    left align
                text of "Page<page number>"
                    right align
    Layout
        header2 of "Notice#<RecallNotice>"
            show border color of black
            shade
            center
        header2 of "_"
        text of "Name:<RecallNotice.Name>"
        blank line
        text of "Description:<RecallNotice.Description>"
        blank line
        visible when (ManufacturerNameEntered)
            text of "Manufacturer:<RecallNotice.ManufacturerName>"
        visible when (ManufactureDateRangeEntered)
            text of "ManufactureDateRange:_From_<RecallNotice.ManufactureDateRange.Begin>_To_<RecallNotice.ManufactureDateRange.End>"
        visible when (DistributionDateRangeEntered)
            text of "DistributionDateRange:_From_<RecallNotice.DistributionDateRange.Begin>_To_<RecallNotice.DistributionDateRange.End>"
        blank line
        visible when (RecallTaskInstruction entered)
            single column
                RecallTaskInstruction
                TaskInstructionDescription
                    no label
            blank line
        visible when (TaskWithQuestions)
            form is RecallNoticeTaskQuestionSummary
        form is RecallNoticeTaskProductRel.TransactionSummary
