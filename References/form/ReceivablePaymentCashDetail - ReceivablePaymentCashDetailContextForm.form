ReceivablePaymentCashDetailContextForm is a Form
    Layout
        display as text
            four column distributed
                Company.RepresentativeText
                ReceivablePaymentHeader
                    label is "Batch"
                ReceivablePayment.PaymentNumber
                visible when (ReceivablePayment.TypeOfPayment.CustomerPayment)
                    ReceivablePayment.Customer.RepresentativeText
                visible when (ReceivablePayment.TypeOfPayment.NonArPayment)
                    text of "Non_AR_Payment"
                        bold
        four column distributed
            visible when (Status.Unreleased)
                DistributionAmount.CurrencyAmount
                    label is "TransactionAmount"
            visible when (Status.Released)
                display as text
                    DistributionAmount.CurrencyAmount
                        label is "TransactionAmount"
            display as text
                visible when (ReceivablePayment.DetailRNADistributions)
                    DerivedOpenAmount
                Status
                GlobalLedgerDate
