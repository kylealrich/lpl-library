RecallUserMain is a Form
    restrict action AttachToRecallOrganization
    restrict action AttachToRecallNotification
    restrict action AttachToRecallNoticeTask
    restrict action AttachReviewerToRecallOrganization
    Layout
        visible when (not RecallUserExists)
            paragraph
                HROrganization
                HROrganization.Name
                    no label
                    display as text
            paragraph
                RecallGroup
                RecallGroup.Description
                    no label
                    display as text
            single column
                RecallUser
                    label is "User"
        two column distributed
            paragraph
                ResponderAndWatcher
                Coordinator
                ProposedItemReviewer
            Active
        two column distributed
            Reference1
            Reference2
        two column distributed
            ContactTitle
            paragraph
                Supervisor
                    label is "ItemLifecycleManagementSupervisor"
                    select is Supervisors
                Supervisor.Employee.FirstLastName
                    no label
                    display as text
        RecallUserPostalAddress
            form is PostalAddressMinimum
        visible when (ResponderAndWatcher)
            header2 of "UserDefaults_forResolutions"
            two column distributed
                paragraph
                    DefaultCompany
                        label is "Company"
                    DefaultCompany.Name
                        no label
                        display as text
                paragraph
                    DefaultLocation
                        label is "DefaultLocation"
                    DefaultLocation.Name
                        no label
                        display as text
            two column distributed
                paragraph
                    DefaultReqLoc
                        label is "DefaultRequestingLocation"
                    DefaultReqLoc.Name
                        no label
                        display as text
                paragraph
                    DefaultProcLevel
                        label is "DefaultProcessLevel"
                    DefaultProcLevel.Name
                        no label
                        display as text
