InvoiceInformation is a Form
    Layout
        four column distributed
            column1
                InvoiceCompany.OrigCompany
                    label is "Company"
                Invoice
                    label is "InvoiceNumber"
            column2
                VendorCustomer
                    label is "Vendor_orCustomer"
                paragraph
                    Suffix
                    CancelSequence
            column3
                Name
                paragraph
                    VoucherNumber
            column4
                CurrencyRate
                TaxUsageCode
        four column distributed
            column1
                InvoicedOrCreditMemo
                    label is "Invoice_orCredit"
                TransactionTaxableAmount
                    label is "TaxableAmount"
            column2
                TransactionInvoiceAmount
                    label is "InvoiceAmount"
                TaxPointDate
            column3
                TransactionCurrency
                    label is "Currency"
                TransactionTaxAmount
                    label is "TaxAmount"
            column4
                InvoiceDate
                TaxRate
        paragraph
            visible when (IsOneSourceTaxTransaction)
                TaxingJurisdiction
                    use text area of 1 lines
                    show up to 80 characters
            visible when (JurisdictionText entered)
                JurisdictionText
                    use text area of 1 lines
                    show up to 80 characters
