InvoiceAccrualReconciliation is an ActionForm
    action is InvoiceAccrualReconciliationReport
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
                bold
        paragraph
            CompanyGroup
                label is "CompanyGroup"
        two column distributed
            VendorGroup
            AccrCode
                label is "InvoiceAccrualCode"
        two column distributed
            InvCurrency
                label is "InvoiceCurrency"
        blank line
        paragraph
            DistribDate
                label is "ReconciliationDate"
            text of "Or"
                bold
            UseCurrentPeriodEndDate
                label is "UseCurrentPeriodEndDate"
        two column distributed
            CurrencyOption
            VendorSequence
        two column distributed
            ReportOption
            SortOption
        two column distributed
            VendorClass
            PrintPOInvoiceDescription
                label is "PrintPOAndInvoiceDescription"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InvoiceAccrualReconciliationReportReport_RDG
                AccrualReconciliationErrorReport_RDG
            column2 of 25%
                InvoiceAccrualReconciliationReportReport_XPT
                AccrualReconciliationErrorReport_XPT
