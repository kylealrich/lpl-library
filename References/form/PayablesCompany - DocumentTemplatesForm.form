DocumentTemplatesForm is a Form
    Layout
        header2 of "Option"
        UseIDM
            label is "UseIDMTemplate"
            when value changed
                refresh PayablesChargebackTemplateRequired
                refresh PayablesDebitMemoTemplateRequired
        two column
            visible when (UseIDM)
                column1
                    header2 of "IDMTemplates"
                    paragraph
                        PayablesChargebackTemplate
                            select is PayablesChargebackTemplate
                            display as required when (PayablesChargebackTemplateRequired)
                            when value changed
                                refresh PayablesChargebackTemplateRequired
                        button of "<PayablesChargebackTemplate.Name>"
                            link is external "<PayablesChargebackTemplate.RetrieveUrl>"
                            display as link
                    paragraph
                        PayablesDebitMemoTemplate
                            select is PayablesDebitMemoTemplate
                            display as required when (PayablesDebitMemoTemplateRequired)
                            when value changed
                                refresh PayablesDebitMemoTemplateRequired
                        button of "<PayablesDebitMemoTemplate.Name>"
                            link is external "<PayablesDebitMemoTemplate.RetrieveUrl>"
                            display as link
        visible when (UseIDM)
            blank line
            header2 of "DocumentDistributionOptions"
            two column
                column1
                    header3 of "Chargeback/CreditMemo"
                    paragraph
                        PrintPayablesChargeback
                            label is "Print"
                    paragraph
                        EmailPayablesChargeback
                            label is "Email"
                        visible when (EmailPayablesChargeback)
                            PayablesChargebackFromAndReplyToEmail
                                label is "FromAndReplyToEmail"
                        visible when (not EmailPayablesChargeback)
                            PayablesChargebackFromAndReplyToEmail
                                label is "FromAndReplyToEmail"
                                display only
                column2
                    visible when (EmailPayablesChargeback)
                        header3 of "Chargeback/CreditMemoIDMEmail"
                        paragraph
                            PayablesChargebackEmailTemplate
                                label is "EmailTemplate"
                                select is PayablesChargebackIDMEmailTemplate
                            button of "<PayablesChargebackEmailTemplate.Name>"
                                link is external "<PayablesChargebackEmailTemplate.RetrieveUrl>"
                                display as link
                        paragraph
                            PayablesChargebackIDMEmailSubject
                                label is "EmailSubject"
                            visible when (PayablesChargebackIDMEmailSubject entered)
                                text of "Sample:<DerivedPayablesChargebackIDMEmailSubject>"
            two column
                column1
                    header3 of "DebitMemo"
                    paragraph
                        PrintPayablesDebitMemo
                            label is "Print"
                    paragraph
                        EmailPayablesDebitMemo
                            label is "Email"
                        visible when (EmailPayablesDebitMemo)
                            PayablesDebitMemoFromAndReplyToEmail
                                label is "FromAndReplyToEmail"
                column2
                    visible when (EmailPayablesDebitMemo)
                        header3 of "DebitMemoIDMEmail"
                        paragraph
                            PayablesDebitMemoEmailTemplate
                                label is "EmailTemplate"
                                select is PayablesDebitMemoIDMEmailTemplate
                            button of "<PayablesDebitMemoEmailTemplate.Name>"
                                link is external "<PayablesDebitMemoEmailTemplate.RetrieveUrl>"
                                display as link
                        paragraph
                            PayablesDebitMemoIDMEmailSubject
                                label is "EmailSubject"
                            visible when (PayablesDebitMemoIDMEmailSubject entered)
                                text of "Sample:<DerivedPayablesDebitMemoIDMEmailSubject>"
            visible when (GlobalWithholding)
                header3 of "Global"
                paragraph
                    LetterOfRetentionTemplate
                        select is LetterOfRetentionIDMTemplate
                    button of "<LetterOfRetentionTemplate.Name>"
                        link is external "<LetterOfRetentionTemplate.RetrieveUrl>"
                        display as link
