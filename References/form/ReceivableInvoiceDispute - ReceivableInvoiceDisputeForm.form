ReceivableInvoiceDisputeForm is a Form
    title is "ReceivableInvoiceDispute"
    Layout
        four column distributed
            column1
                paragraph
                    Company
                        select is Companies
                    Company.Name
                        no label
                        display as text
                paragraph
                    CustomerComments
                        display as text
            column2
                paragraph
                    Customer
                        select is GroupSearchName
                    Customer.Name
                        no label
                        display as text
                button of "CustomerComments"
                    list is CompanyCustomerCommentRel.CompanyCustomerCommentList
            column3
                paragraph
                    Company.Currency
                        label is "Currency"
                        display as text
        blank line
        five column distributed
            column1
                paragraph
                    ReceivableInvoiceDetail.ReceivableInvoiceRel.ReceivableInvoiceType
                        label is "ReceivableInvoiceType"
                        display as text
            column2
                paragraph
                    ReceivableInvoiceDetail.Invoice
                        display as text
            column3
                paragraph
                    ReceivableInvoiceDetail.ReceivableInvoiceRel.InvoiceAmount.CurrencyAmount
                        display as text
            column4
                paragraph
                    OriginalCurrency
                        display as text
        five column distributed
            column1
                paragraph
                    ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                        display as text
            column2
                paragraph
                    ReceivableInvoiceDetail.InvoiceAmount.CurrencyAmount
                        label is "DetailTransactionAmount"
                        display as text
            column3
                paragraph
                    ReceivableInvoiceDetail.PaymentSeq
                        label is "PaymentSequence"
                        display as text
            column4
                paragraph
                    ReceivableInvoiceDetail.DueDate
            column5
                paragraph
                    ReceivableInvoiceDispute
                        label is "DisputeSequence"
                        display as text
        blank line
        visible when (IsOpenDisputes)
            five column distributed
                column1
                    paragraph
                        DisputeCode
                            display as text
                        DisputeCode.Description
                            no label
                            display as text
                column2
                    paragraph
                        visible when (ReceivableInvoiceDisputeExists)
                            DisputedAmount
                                display as text
                        visible when (not ReceivableInvoiceDisputeExists)
                            DisputedAmount
            five column distributed
                column1
                    paragraph
                        DisputeDate
                            label is "Date_ofDispute"
                    paragraph
                        TransientOverrideDunningProcess
                            label is "OverrideDunningProcess"
                column2
                    paragraph
                        ResolveDate
                            label is "Date_ofResolution"
                    paragraph
                        Description
                column3
                    paragraph
                        Status
                            display as text
                    paragraph
                        visible when (DueDateChangeAllowed)
                            TransientDueDate
                                label is "UpdateDueDate"
                column4
                    paragraph
                        TransactionComments
                            display as text
                column5
                    paragraph
                        button of "TransactionComments"
                            list is CompanyCustomerTransactionCommentRel.TransactionCommentsList
        visible when (IsClosedDispute)
            five column distributed
                column1
                    paragraph
                        DisputeCode
                            display as text
                        DisputeCode.Description
                            no label
                            display as text
                column2
                    paragraph
                        DisputedAmount
                            display as text
            five column distributed
                column1
                    paragraph
                        DisputeDate
                            label is "Date_ofDispute"
                            display as text
                    paragraph
                        TransientOverrideDunningProcess
                            label is "OverrideDunningProcess"
                            display as text
                column2
                    paragraph
                        ResolveDate
                            label is "Date_ofResolution"
                            display as text
                    paragraph
                        Description
                            display as text
                column3
                    paragraph
                        Status
                            display as text
                column4
                    paragraph
                        TransactionComments
                            display as text
                column5
                    paragraph
                        button of "TransactionComments"
                            list is CompanyCustomerTransactionCommentRel.TransactionCommentsList
