LocationValuationSummaryForm is a Form
    Layout
        display as text
            paragraph
                button of "ApproveAllRecommendations"
                    action is ApproveAll
                button of "SendAllRecommendations"
                    action is SendAll
                button of "MakeAllItemsInBound"
                    action is MakeAllItemsInBound
            visible when (IIHInventoryLocationRel.AnalysisDate not entered)
                PerpetualAnalysisDateDerived
                    label is "AnalysisDate"
                    display as text
            visible when (IIHInventoryLocationRel.AnalysisDate entered)
                IIHInventoryLocationRel.AnalysisDateString
                    label is "AnalysisDate"
                    display as text
            three column distributed
                column1
                    paragraph
                        IILocationCount
                            label is "Items"
                            display as text
                        IILocationRecCount
                            label is "Recommended"
                            display as text
                        DerivedOutOfBoundsItems
                            label is "NumberOfOutOfBoundItems"
                            display as text
                    paragraph
                        IIHInventoryLocationRel.GeneralEligibleIemCount
                            label is "EligibleItems"
                            display as text
                        IIHInventoryLocationRel.GeneralEligibleIemValue
                            label is "Value"
                            display as text
                    paragraph
                        IIHInventoryLocationRel.GeneralRemovalCandidatesCount
                            label is "RemovalCandidates"
                            display as text
                        IIHInventoryLocationRel.GeneralRemovalCandidatesValue
                            label is "Value"
                            display as text
                column2
                    IIHInventoryLocationRel.ReferenceInventoryValue
                        label is "ReferenceValue"
                        display as text
                    IIHInventoryLocationRel.CurrentInventoryValue
                        label is "CurrentValue"
                        display as text
                    IIHInventoryLocationRel.TargetInventoryValue
                        label is "TargetValue"
                        display as text
                column3
                    IIHInventoryLocationRel.UnderReviewValue
                        label is "UnderReview"
                        display as text
                    IIHInventoryLocationRel.AchievedSoFarValue
                        label is "AchievedSoFar"
                        display as text
