Intrastat is a Form
    Layout
        header2 of "Intrastat"
        three column
            column1
                IntrastatUsed
                    label is "IntrastatIdentification"
            column2
                BranchID
                    label is "BranchIdentification"
            column3
                LastIntrastatNumber
                    label is "LastIntrastatSequenceNumber"
                    display only
        header2 of "V\\A\\T"
        paragraph
            visible when (NotUsingVertex)
                VATRegistrationCountry
                    label is "VATRegistrationCountry/\\Jurisdiction"
            visible when (UsingVertex)
                VATRegistrationCountry
                    label is "Default_\\TaxpayerCountry/\\JurisdictionCode"
        paragraph
            VATRegistrationNumber
            button of "Validate"
                visible when (ValidateVAT)
                action is ValidateVATRegistrationNumber
                display as link
        visible when (PerformVATValidation)
            paragraph
                VATValidation.VATNumberValid
                    display as text
                VATValidation.ValidationDate
                    display as text
        single column
            RecoverableAccount
                label is "Recoverable"
                compact format
        paragraph
            NonRecoverableAccount
                label is "NonRecoverable"
                compact format
        paragraph
            ForeignRecoverableAccount
                label is "ForeignRecoverable"
                compact format
        paragraph
            ForeignNonRecoverableAccount
                label is "ForeignNonRecoverable"
                compact format
        paragraph
            LandNonRecoverable
                label is "LandNonRecoverable"
        paragraph
            DefaultFilingCurrency
            DefaultFilingCurrency.ISOCode
                label is "I\\S\\O\\_Code"
                display as text
            DefaultFilingCurrency.ISOCodeNumber
                label is "I\\S\\O\\_Number"
                display as text
