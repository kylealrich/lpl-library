BillofExchangeEntryDetails is a Form
    title is "BillOfExchangeEntryDetails"
    Layout
        three column distributed
            column1
                paragraph
                    Vendor
                        label is "PayVendor"
                        select is VendorName
                    Vendor.VendorName
                        no label
                        display as text
                DraftNumber
                    label is "BillOfExchangeNumber"
                DraftAmount
                    label is "BillOfExchangeAmount"
                paragraph
                    DraftDate
                        label is "BillOfExchangeDate"
                    MaturityDate
                        label is "DueDate"
            column2
                PayerReference
                    label is "PayersReference"
                Currency
                paragraph
                    CashCode
                        show up to 16 characters
                    CashCode.Description
                        no label
                        display as text
                    CashCode.Currency
                        no label
                        display as text
                paragraph
                    RemitToCode
                        label is "RemitToLocation"
                        select is RemitToLocations
                    RemitToCode.VendorName
                        no label
                        display as text
            column3
                Status
                    display as text
                Suffix
                AppliedAmount
