StudentActivityReceiptForm is a CompositeForm
    is primary
    title is "<mode>Receipt"
    show panel control on left
    Actions
        action is Entered.Create
            action icon is create
        action is Entered.Release
            action icon is release
            hide when invalid
        action is Released.AssignReceipt
            hide when invalid
        action is save
        action is save and new
        action is Entered.DeleteReceipt
            action icon is delete
            hide when invalid
        action is Released.Delete
            action icon is delete
            hide when invalid
        action is next record
        action is previous record
        action is refresh
    Main is a Panel
        form is Main
    PayorInformation is a Panel
        form is PayorInformation
    EnterableReceiptDetailLines is a Panel
        title is "ReceiptDetailLines"
        visible when (DetailsCanBeEntered)
        list is StudentActivityReceiptDetail set.OriginatingReceiptDetailList
            helper list is SchoolActivityAccountRel.SchoolActivityAccountSelectList
                action is AssignActivityToReceipt
                    invoked.ReceiptNumber = StudentActivityReceipt
    ViewableReceiptDetailLines is a Panel
        title is "ReceiptDetailLines"
        visible when (DetailsCanBeViewed)
        list is StudentActivityReceiptDetail set.OriginatingReceiptDetailList
