VertexOptionsForm is a Form
    title is "VertexOptions"
    Layout
        two column table
            column1
                single column
                    header2 of "ProcurementEventsUsedForPayables"
                    VertexInvoiceVerificationRequest
                        label is "InvoiceVerificationRequest"
                    VertexPurchaseOrderRequest
                        label is "PurchaseOrderRequest"
                    PayablesTaxingLocation
                    ReceivablesTaxingLocation
                    visible when (VertexVersion9)
                        TaxAttributeCode
                    VertexCallMethod
            column2
                single column
                    header2 of "AdditionalOptions"
                    SendAddressOrTaxAreaId
                        label is "SendAddressOrTaxAreaID"
