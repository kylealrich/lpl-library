CreatePageReportForm is an ActionForm
    action is CreatePageReport
        on completion navigate to EditorNavigation
    title is "CreateReport"
    Layout
        single column
            ReportName
            BusinessPage
            BusinessPagePanel
        header2 of "AdvancedOptions"
        single column
            paragraph
                PageOptions
                Orientation
            FontOffset
            RetentionDuration
                mouse over text is "DefaultDocumentRetentionDuration,InDays,ForThisReport"
            Sharing
                show up to 50 characters
            paragraph
                visible when (Sharing.Group)
                    ActorGroup
                        select is ActorGroupHierarchyWithCountsSelectList
                    visible when (ActorGroup entered)
                        ActorGroup.GroupMemberExpandedRollupCount
                            label is "Count"
                            display as tag
                                color of purple
                visible when (Sharing.Role)
                    Role
                visible when (Sharing.RoleGroup)
                    RoleGroup
            DataSource
                show up to 50 characters
            visible when (DataSource.AsOfDate)
                AsOfDate
            ViewArchiveData
