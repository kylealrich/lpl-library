PhoneCashLedgerBatchApprovalContextForm is a Form
    title is "CashLedgerBatchApprovalContextForm"
    Layout
        display as text
            single column
                BatchApprovalType
            two column table
                column1
                    CashLedgerBatchApproval
                        label is "BatchNumber"
                    BatchTotalAmount
                        label is "TotalAmount"
                column2
                    BatchDate
                        label is "Date"
                    BatchRecordCount
                        label is "RecordCount"
            visible when (ApprovalCodeRequired)
                paragraph
                    ApprovalCode
                        label is "ApprovalCode"
                    visible when (not Status.Approved)
                        visible when (Approver entered)
                            Approver
                            Approver.PreferredSimplePresentationName
                                no label
                        visible when (ApproverTeam.FinanceTeam entered)
                            ApproverTeam.FinanceTeam
                                label is "ApproverTeam"
