CustomerRepresentativeContext is a Form
    Layout
        three column distributed
            visible when (CustomerGroupExists)
                CustomerGroup.RepresentativeText
                    display as text
            visible when (not CustomerGroupExists)
                paragraph
                    CustomerGroup
                        select is PortalCustomerGroups
                    CustomerGroup.CustomerBusinessGroup.Description
                        no label
                        display as text
            CustomerDisplayName
                label is "CustomerRepresentative"
                display as text
            CustomerName
                label is "Name"
        three column distributed
            CustomerRepresentativeStatus
                display as tag
                    color of yellow when (NeedsValidationStill)
                    color of green when (CustomerRepresentativeStatus.Validated)
                    color of red when (Rejected)
            ReceivableCompany.RepresentativeText
                label is "RelatedCompany"
                display as text
            Customer.RepresentativeText
                label is "RelatedCustomer"
                display as text
