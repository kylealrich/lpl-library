ReceivableGLDistributionContextForm is a Form
    title is "ReceivableDistribution"
    restrict action NewJournalizeDistributions
    Layout
        display as text
            two column
                column1
                    paragraph
                        ReceivableCompanyDataGroup.TransactionCompany
                            label is "TransactionCompany"
                        ReceivableCompanyDataGroup.TransactionCompany.Name
                            no label
                    paragraph
                        ReceivableCompanyGroup.GlCompany
                            label is "GlobalLedgerCompany"
                        ReceivableCompanyGroup.GlCompany.Name
                            no label
                    GeneralLedgerAccount
                        label is "GlobalLedgerAccount"
                        compact format
                column2
                    Status
                    GeneralLedgerDate
                        label is "GlobalLedgerDate"
                    Description
                    DistributionAmount.CurrencyAmount
