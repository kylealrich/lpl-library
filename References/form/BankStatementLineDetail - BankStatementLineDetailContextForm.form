BankStatementLineDetailContextForm is a Form
    title is "LineDetail"
    Layout
        paragraph
            CashManagementAccount
            CashManagementAccount.Title
                no label
                display as text
            LineDetailStatus
                display as text
        paragraph
            BankStatement
                label is "StatementNumber"
            BankStatementLine
                compact format
            visible when (BankStatement entered)
                BankStatement.StatementDate
                    display as text
        visible when (LineAmount entered)
            display as text
                paragraph
                    LineAmount
                    DebitCreditIndicator
