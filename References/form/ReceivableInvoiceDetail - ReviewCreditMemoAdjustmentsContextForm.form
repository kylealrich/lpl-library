ReviewCreditMemoAdjustmentsContextForm is a Form
    title is "ReviewCreditMemoAdjustments"
    Layout
        display as text
            three column distributed
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                    visible when (IsNonBaseCurrency)
                        Company.Currency
                            label is "Currency"
                paragraph
                    BatchNumber
                        label is "Batch"
                    ReceivableInvoiceDetail.Invoice
                    ReceivableInvoiceDetail.PaymentSeq
                        label is "Sequence"
                Status
            three column distributed
                paragraph
                    Customer.RepresentativeText
                    ReceivableProcessLevel.RepresentativeText
                        label is "ProcessLevel"
                paragraph
                    GeneralLedgerDate
                paragraph
                    TransientSignedTransactionAmount
                    OriginalCurrency
                        no label
                    visible when (DerivedOpenAmount entered)
                        DerivedOpenAmount
                            label is "Open"
                                header4
                                bold
                                color of red
                            header4
                            bold
                            color of red
                    visible when (DerivedOpenAmount not entered)
                        DerivedOpenAmount
                            label is "Open"
                                header4
                                bold
                                color of green
                            header4
                            bold
                            color of green
                    visible when (IsNonBaseCurrency)
                        OriginalCurrency
                            header4
                            bold
            paragraph
                visible when (Status.OpenTransaction)
                    button of "AddWriteoff"
                        action is WriteOff
