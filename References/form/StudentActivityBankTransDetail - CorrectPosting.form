CorrectPosting is an ActionForm
    action is CorrectPosting
    title is "CorrectActivityPosting"
    Layout
        header3 of "OriginalActivity"
        three column
            SchoolActivityAccount
                label is "Activity"
                display only
                compact format
            SchoolActivityAccount.Description
                no label
            BankTransDetailAmount
                label is "Amount"
        header3 of "CorrectedActivityDetails"
        three column
            PrmActivity1
                label is "Activity1"
                compact format
                select is SchoolActivityAccountSelectList
            PrmActivity1.Description
                no label
            PrmAmount1
                label is "Amount"
        three column
            PrmActivity2
                label is "2"
                compact format
                select is SchoolActivityAccountSelectList
            PrmActivity2.Description
                no label
            PrmAmount2
                no label
        three column
            PrmActivity3
                label is "3"
                compact format
                select is SchoolActivityAccountSelectList
            PrmActivity3.Description
                no label
            PrmAmount3
                no label
        three column
            PrmActivity4
                label is "4"
                compact format
                select is SchoolActivityAccountSelectList
            PrmActivity4.Description
                no label
            PrmAmount4
                no label
        visible when (BankTransactionType.Disbursement)
            header3 of "GLAcountsForRevenueTypeActivities"
            single column
                PrmGLAccount1
                    label is "GLAccount1"
                    compact format
                PrmGLAccount2
                    label is "2"
                    compact format
                PrmGLAccount3
                    label is "3"
                    compact format
                PrmGLAccount4
                    label is "4"
                    compact format
