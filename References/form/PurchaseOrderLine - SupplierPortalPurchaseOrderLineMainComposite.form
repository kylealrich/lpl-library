SupplierPortalPurchaseOrderLineMainComposite is a CompositeForm
    title is "PurchaseOrder<PurchaseOrder>Line<LineNumber>Details"
    called out actions only
    context form is SupplierPortalPurchaseOrderLineCompositeContext
        background is theme color
    Actions
        navigation is ViewPurchaseOrderNav
            action icon is open
            label is "ViewPurchaseOrder"
        action is previous record
            hide when invalid
        action is next record
            hide when invalid
    Details is a Panel
        form is SupplierPortalPurchaseOrderLineMainDetail
    Comments is a Panel
        title is "Comments"
        visible when (SupplierCommentsExist)
        list is PurchaseOrderLineCommentDisplayOnPortalRel.SupplierPortalPurchaseOrderLineCommentCardList
    AddOnCharges is a Panel
        visible when (AddOnChargeExistsForAVendor)
        list is PurchaseOrderAndLineAddOnChargesForALineSameVendorRel.SupplierPortalLineAddOnCostsForAPurchaseOrder
