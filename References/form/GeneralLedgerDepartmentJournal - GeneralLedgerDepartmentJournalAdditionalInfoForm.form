GeneralLedgerDepartmentJournalAdditionalInfoForm is a Form
    title is "Main"
    Layout
        two column distributed
            paragraph
                visible when (not TransactionsExist)
                    PostingDate
                        label is "PostDate"
                visible when (TransactionsExist)
                    PostingDate
                        label is "PostDate"
                        display only
            paragraph
                System
                    display as text
                Status
                    display as text
        two column distributed
            Description
            GeneralLedgerDepartmentJournal
                label is "Journal"
                display only
        two column distributed
            visible when (not TransactionsExist)
                TransactionDate
                GeneralLedgerEvent
                    label is "GlobalLedgerEvent"
            visible when (TransactionsExist)
                TransactionDate
                    display only
                GeneralLedgerEvent
                    label is "GlobalLedgerEvent"
                    display only
        two column distributed
            Reference
            PrimaryLedger
                display only
        two column distributed
            visible when (not TransactionsExist)
                EnteredJournalAmount
                    label is "JournalAmount"
            visible when (TransactionsExist)
                JournalAmount
                    display only
            visible when (not TransactionsExist)
                Currency
            visible when (TransactionsExist)
                Currency
                    display only
        single column
            visible when (not TransactionsExist)
                FinanceCodeBlock
                    label is "ExpenseFinanceStructure"
                    compact format
            visible when (TransactionsExist)
                FinanceCodeBlock
                    label is "FinanceStructure"
                    display only
                    compact format
