ContractNegotiationDetailForm is a Form
    is primary
    title is "ContractNegotiationDetail"
    Layout
        paragraph
            ItemGroup
            Item
            Item.Description
                no label
                display as text
        paragraph
            ContractNegotiation
            ContractNegotiationDetail
            NegotiationTimeStamp
                display only
        header3 of "FirstContract"
        paragraph
            DerivedContract1QuantityPurchased
                label is "QuantityPurchased"
            Contract1NetAmount
                label is "NetAmount"
            Contract1AmountWithoutRebate
                label is "GrossAmount"
            visible when (HasActualContracts)
                ContractNegotiation.Contract1
                    label is "Contract"
        header3 of "SecondContract"
        paragraph
            DerivedContract2QuantityPurchased
                label is "QuantityPurchased"
            Contract2NetAmount
                label is "NetAmount"
            Contract2AmountWithoutRebate
                label is "GrossAmount"
            visible when (HasActualContracts)
                ContractNegotiation.Contract2
                    label is "Contract"
        visible when (SplitExists)
            header3 of "SplitTotals"
            paragraph
                blank line
                QuantityPurchased
                SplitTotalNetAmount
                    label is "NetAmount"
                SplitTotalGrossAmount
                    label is "GrossAmount"
