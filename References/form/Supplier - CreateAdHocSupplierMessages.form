CreateAdHocSupplierMessages is an ActionForm
    action is CreateAdHocSupplierMessages
    Layout
        single column
            ParmSupplierGroup
            ParmRunGroup
        two column
            ParmMessageTitle
            ParmMessageText
        single column
            ParmAttachment.File
                label is "Attachment"
        paragraph
            ParmMessageOwner
                select is DialogContactForSupplierPortalDialog
            ParmMessageOwner.FirstLastName
                no label
                display as text
        two column
            ParmPriority
            ParmRelease
        two column
            ParmInactive
            ParmVendorOnly
        two column
            ParmRecentActivity
            ParmSubmittedBid
        single column
            ParmCommodityCode
                compact format
            ParmMissingBankingInfo
        visible when (ParmMissingBankingInfo)
            single column
                ParmStandardMessaging
                text of "CheckUseStandardMessagingToUseTheFollowingTitleAndTextForMissingBankingInfo:"
                    color of blue
                text of "Title:MissingBankInformation"
                text of "Text:PleaseEnterBankInformationOnYourSupplierRecord.SelectMyAccountToEnterInformation"
        single column
            ParmUnsubmittedInvoice
        visible when (ParmUnsubmittedInvoice)
            single column
                ParmStandardMessaging
                text of "CheckUseStandardMessagingToUseTheFollowingTitleAndTextForUnsubmittedInvoices:"
                    color of blue
                text of "Title:UnsubmittedInvoices"
                text of "Text:PleaseSubmitInvoicesInSupplierPortalToAllowThemToBeProcessed.SelectOrderManagement;ManageSupplierCreatedInvoices"
