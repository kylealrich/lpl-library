InvoiceEntry is a CompositeForm
    is primary
    title is "<DerivedFormTitle>"
    context form is InvoiceEntryContext
        background is theme color
    Actions
        action is Unreleased.RemoveHoldCode
            action icon is icon.cancel
            hide when invalid
        action is RemoveHoldCode
            action icon is icon.cancel
            hide when invalid
        action is Unreleased.Release
            action icon is release
            mouse over text is "Release"
            hide when invalid
        action is previous record
            label is "_"
            mouse over text is "Previous_Record"
        action is next record
            label is "_"
            mouse over text is "Next_Record"
        action is Unreleased.Create
            action icon is create
            label is "_"
            mouse over text is "Create"
            hide when invalid
        action is Unreleased.CreateInvoiceFromInvoice
            action icon is copy
            label is "_"
            mouse over text is "CreateUsingCopyFromInvoice"
            hide when invalid
        action is save
            action icon is save
            label is "_"
            mouse over text is "Save"
            hide when invalid
        action is Unreleased.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
            hide when invalid
        action is refresh
            label is "_"
            mouse over text is "Refresh"
    Main is a Panel
        form is Main
    InvoiceOptions is a Panel
        form is InvoiceOptions
    Payment is a Panel
        form is Payment
    BillingAmounts is a Panel
        title is "Amounts"
        visible when (IsBaseAndInvoiceCurrencySame)
        form is BillingAmounts
    BaseAmounts is a Panel
        title is "Amounts"
        visible when (not IsBaseAndInvoiceCurrencySame)
        form is TaxInquiry
    InvoiceLines is a Panel
        title is "Lines"
        visible when (not AllowMultipleSalesAccountEntry)
        list is BillingInvoiceLine set.InvoiceLines
    InvoiceLinesSales is a Panel
        title is "Lines"
        visible when (AllowMultipleSalesAccountEntry)
        list is BillingInvoiceLine set.InvoiceLinesWithSalesAccount
    InvoiceCharges is a Panel
        title is "AddOnCharges"
        list is BillingInvoiceAddOnChargesRel.InvoiceAddOnCharges
    Comments is a Panel
        list is BillingInvoiceCommentsRel.BillingInvoiceCommentsList
            helper list is BillingStandardCommentHeaderRel.BillingStandardCommentHeaderForCopyList
                action is CopyComments
    UserFields is a Panel
        form is UserFields
    Attachments is a Panel
        list is BillingInvoiceAttachment set.primary
    CreditStatus is a DashBoardPanel
        title is "CreditStatus"
        visible when (OrderEntryCustomerRel.CreditLimitHoldCode.BillingInvoiceRelease)
        show 4 columns
        CreditStatus is a Panel
            double width
            form is CreditLimitStatus
