CustomerRepresentativeCommentForm is a Form
    is primary
    title is "Comment"
    Layout
        display as text
            paragraph
                CustomerGroup
                CustomerGroup.CustomerBusinessGroup.Description
                    no label
            paragraph
                CustomerRepresentative
                CustomerRepresentative.CustomerName
                    no label
        single column
            Title
            Comment
                use text area
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
