AutomaticMemoApplication is an ActionForm
    action is AutomaticMemoApplication
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
            CompanyGroup.Description
                no label
                display as text
        paragraph
            Operator
                show up to 15 characters
            Operator.Name
                no label
                display as text
        paragraph
        single column
            GlDate
                label is "PostDate"
        single column
            GlDateOvr
                label is "PostDateOverride"
        paragraph
            ProcessLevel
                select is ProcessLevels
            ProcessLevel.Name
                no label
                display as text
        single column
            AllCredits
                label is "ApplyAllCredits"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                AutomaticMemoApplicationReport_RDG
                AutomaticMemoApplicationErrorReport_RDG
            column2 of 25%
                AutomaticMemoApplicationReport_XPT
                AutomaticMemoApplicationErrorReport_XPT
