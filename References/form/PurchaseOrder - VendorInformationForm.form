VendorInformationForm is a Form
    Layout
        single column
            paragraph
                visible when (Vendor.HasLogo)
                    Vendor.Logo.File
                        no label
                        display as full image up to 5 lines
                            missing image is missingpicture96px
                                foreground text is "<Vendor.XiVendorNameAbbreviation>"
                Vendor.DerivedVendorNameID
                    no label
                    header3
                    bold
        two column distributed
            column1
                Vendor.ContactName
                    label is "PrimaryContact"
                    display as text
                paragraph
                    button of icon.phone
                        link is "tel:<Vendor.PhoneNumber.SubscriberNumber>"
                    button of "<Vendor.PhoneNumber.SubscriberNumber>"
                        link is "tel:<Vendor.PhoneNumber.SubscriberNumber>"
                        display as link
                paragraph
                    button of icon.mail
                        link is "mailto:<Vendor.EmailAddress>"
                    button of "<Vendor.EmailAddress>"
                        link is "mailto:<Vendor.EmailAddress>"
                        display as link
            column2
                Vendor.VendorAccount
                    label is "AccountNumber"
                    display as text
                Vendor.CurrentAddressRel.PostalAddress.DisplayAddressMultiline
                    label is "Address"
                    display as text
