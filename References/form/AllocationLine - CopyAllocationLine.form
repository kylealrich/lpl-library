CopyAllocationLine is an ActionForm
    action is CopyAllocationLine
    Layout
        single column
            visible when (AllocationControl.Type.Actuals)
                PrmAllocationControl
                    select is AllocationControlActualsList
            visible when (AllocationControl.Type.Budget)
                PrmAllocationControl
                    select is AllocationControlBudgetList
            visible when (Allocation.CustodialAccountInterest)
                PrmAllocation
                    select is PrmAllocationControl.AllocationsRel.AllocationCustodialList
            visible when (not Allocation.CustodialAccountInterest)
                PrmAllocation
                    select is PrmAllocationControl.AllocationsRel.AllocationNonCustodialList
            PrmNewAllocationLine
            PrmNewDescription
