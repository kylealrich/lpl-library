CreateSubstituteSpecialItem is an ActionForm
    action is CreateSubstituteSpecialItem
        on completion navigate to ViewAssociatedItem
    title is "AssociatedSpecialItem"
    Layout
        ItemGroup
            label is "ItemGroup"
        Item
            label is "Item"
        Item.Description
            label is "ItemDescription"
        DerivedSubstitute
            label is "AssociatedItemSubType"
        paragraph
            Contract
                label is "Contract"
                select is ContractsForAssociatedItem
                when value changed
                    refresh ContractLine
            ContractLine
                label is "ContractLine"
                select is ContractLinesForAssociatedItemList
                when value changed
                    AssociatedItem.RelatedItem =  ContractLine.ItemNumber
        AssociatedItem.RelatedItem
            label is "RelatedItem"
            display only
        ContractLine.ItemDescription
            label is "RelatedItemDescription"
        paragraph
            ContractLine.Manufacturer
                label is "Manufacturer"
            ContractLine.ManufacturerNumber
                label is "ManufacturerNumber"
        AssociatedItem.RelatedCompany
            label is "Company"
        AssociatedItem.RelatedLocation
            label is "Location"
        EffectiveDate
            label is "EffectiveDate"
        ExpirationDate
            label is "ExpirationDate"
        Priority
            label is "Priority"
