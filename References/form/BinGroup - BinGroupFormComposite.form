BinGroupFormComposite is a Form
    Layout
        three column distributed
            column1
                visible when (RecordExists)
                    display as text
                        Company.DerivedCompanyDisplay
                            label is "Company"
                            display as text
                        BinGroup
                            display as text
                visible when (not RecordExists)
                    paragraph
                        Company
                            show up to 15 characters
                        Company.Name
                            no label
                            display as text
                    BinGroup
            column2
                visible when (RecordExists)
                    InventoryLocation.RepresentativeText
                        label is "Location"
                        display as text
                visible when (not RecordExists)
                    paragraph
                        InventoryLocation
                            show up to 15 characters
                        InventoryLocation.Name
                            no label
                            display as text
                Description
                    label is "Description"
                    show up to 20 characters
            column3
                paragraph
                    visible when (InventoryLocation.LocationType.ParLocation)
                        ParLocationMsg
                            no label
                            display as tag
                                color of red
        blank line
