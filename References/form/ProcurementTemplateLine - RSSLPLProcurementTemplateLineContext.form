RSSLPLProcurementTemplateLineContext is a Form
    title is "ShoppingList<ProcurementTemplate>Line<DisplayOrder>Details"
    Layout
        display as text
            header2 of "Item"
            four column distributed
                column1
                    paragraph
                        ProcurementGroup
                        ProcurementGroup.Description
                            no label
                            display as text
                    paragraph
                        visible when (RSSLPLDisplayFromCompany)
                            DefaultFromCompany
                                label is "DeliverFromCompany"
                            FromCompanyRel.Name
                                no label
                    paragraph
                        DescriptionDisplay
                            label is "Description"
                column2
                    paragraph
                        ProcurementTemplate
                        ProcurementTemplate.Description
                            no label
                    paragraph
                        visible when (RSSLPLDisplayFromLocation)
                            DefaultFromLocation
                                label is "DeliverFromLocation"
                            FromLocationRel.Name
                                no label
                    paragraph
                        Description2Display
                            label is "_"
                column3
                    paragraph
                        DisplayOrder
                            label is "LineNumber"
                    paragraph
                        DefaultItemType
                            label is "ItemType"
                        Item
                    paragraph
                        Description3Display
                            label is "_"
