SubcontractorDiversityForm is a Form
    is primary
    title is "SubcontractorDiversity"
    Layout
        single column
            PayablesDiversityCode
                label is "DiversityCode"
            PayablesDiversityCode.Description
                label is "DiversityDescription"
                display only
            EffectiveDate
            ExpirationDate
            ReviewDate
            CertificationComplete
            Active
        visible when (EffectiveDateEntered)
            paragraph
                Alerts.YellowAlert
                text of "DaysBeforeTheDiversityExpirationDate"
                Alerts.RedAlert
                text of "DaysBeforeTheDiversityExpirationDate"
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
