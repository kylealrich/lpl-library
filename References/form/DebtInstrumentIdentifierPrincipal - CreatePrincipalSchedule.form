CreatePrincipalSchedule is an ActionForm
    action is CreatePrincipalSchedule
    Layout
        two column
            DebtInstrument
                display as text
            DebtInstrument.Description
                display as text
        two column
            DebtInstrumentIdentifier
                display as text
            DebtInstrumentIdentifier.Description
                label is "IdentifierDescription"
                display as text
        blank line
        single column
            PrincipalFrequency
            visible when (PrincipalFrequency.Daily)
                EveryNumberOfDays
            BusinessDayConvention
        paragraph
            PaymentDateRange.Begin
                label is "PaymentDateRange"
            text of "_-"
            PaymentDateRange.End
                no label
        single column
            Principal
