ShipmentLoadForm is a CompositeForm
    is primary
    title is "Load<ShipmentLoadConsolidation>"
    context form is ShipmentLoadContextForm
        background is theme color
    Actions
        action is ForRelease.Release
            action icon is release
            hide when invalid
        action is ForRelease.Undo
            hide when invalid
        action is Unreleased.Finish
            action icon is finalize
            hide when invalid
        action is Released.Close
            hide when invalid
        action is SendShipmentLoadConsolidationToPrinter
            action icon is print
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is Unreleased.Create
            label is "_"
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is Unreleased.Delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        visible when (IsUnreleased)
        form is Main
    HasFromShipDateShipments is a Panel
        title is "Shipments"
        visible when (HasEnteredFromShipDateAndUnreleased)
        list is ShipmentLoadRel.ShipmentLoadList
            helper list is WarehouseShipmentRel.DistributionManagementWarehouseShipmentList
                action is IncludeWarehouseShipment
    NoFromShipDateShipments is a Panel
        title is "Shipments"
        visible when (NoEnteredFromShipDateAndUnreleased)
        list is ShipmentLoadRel.ShipmentLoadList
            helper list is AllWarehouseShipmentRel.DistributionManagementWarehouseShipmentList
                action is IncludeWarehouseShipment
    ShipmentLoadContainer is a Panel
        title is "ContainerUnits"
        list is ShipmentLoadContainerRel.ShipmentLoadContainerList
    ConsolidatedShipmentLines is a Panel
        list is ShipmentLoadLineRel.ShipmentLoadLineList
