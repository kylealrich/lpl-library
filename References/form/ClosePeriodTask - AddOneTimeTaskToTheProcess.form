AddOneTimeTaskToTheProcess is an ActionForm
    action is AddOneTimeTaskToTheProcess
    Layout
        header3 of "UpdateFieldsForAddingToTheProcessAsRecurringTask"
        single column
            paragraph
                PrmParentTask
                    label is "ParentTask"
                PrmParentTask.TaskName
                    no label
                    display as text
            PrmTaskName
                label is "TaskName"
            PrmTaskDetail
                label is "Instructions"
                use text area of 3 lines
        visible when (CloseManagementGroup.HasTaskTypes)
            header3 of "Type"
            two column
                PrmPrimaryTaskType
                    label is "Primary"
                    select is PrimaryCloseTaskTypeSelect
            two column
                PrmSecondaryTaskType
                    label is "Secondary"
                    select is SecondaryCloseTaskTypeSelect
            two column
                PrmTertiaryTaskType
                    label is "Tertiary"
                    select is TertiaryCloseTaskTypeSelect
        header3 of "Ownership"
        two column
            PrmFinanceTeam
                label is "Team"
                select is FinanceTeamSelect
            PrmFinanceTeam.Description
                no label
                display as text
        two column
            PrmTaskOwner
                label is "PersonResponsible"
                compact format
                select is FinanceTeamMemberActiveSelect
            PrmTaskOwner.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                no label
                display as text
        header3 of "CompanyAndCalendar"
        two column
            PrmTaskCompany
                label is "Company"
            PrmTaskCompany.FinanceCompanyField.GeneralLedgerCompany.Name
                no label
                display as text
        two column
            PrmOneTimeCalendar
                label is "Calendar"
            PrmOneTimeCalendar.Description
                no label
                display as text
        two column
            PrmOneTimePeriodGroup
                label is "PeriodGroup"
            PrmOneTimePeriodGroup.Description
                no label
                display as text
        header3 of "Schedule"
        single column independent
            text of "EnterNumberOfDaysFromThePeriodEndDate"
                header4
                bold
                color of blue
        single column independent
            paragraph
                PrmOneTimeBeginDaysFromPeriodEnd
                    label is "Begin"
                PrmOneTimeBeginTime
                    label is "DaysFromPeriodEndAt"
            paragraph
                PrmOneTimeDueDaysFromPeriodEnd
                    label is "Due"
                PrmOneTimeDueTime
                    label is "DaysFromPeriodEndAt"
                PrmOneTimeDueTimeSensitive
                    label is "IsTimeSensitive"
                        left of field
        paragraph
            text of "<NumberOfDaysNote>"
                bold
                align as label
        blank line
        single column independent
            text of "OrEnterASpecificDayOfTheMonthForThePeriod"
                header4
                bold
                color of blue
        single column independent
            paragraph
                PrmOneTimeBeginDayOfMonth
                    label is "Begin"
                PrmOneTimeBeginLastDayOfMonth
                    label is "DayOfTheMonth__Or__BeginOnTheLastDayOfTheMonth"
                        left of field
                PrmOneTimeBeginTime
                    label is "At"
            paragraph
                PrmOneTimeBeginDayForNextMonth
                    label is "ForTheMonthFollowingThePeriod"
            paragraph
                PrmOneTimeDueDayOfMonth
                    label is "Due"
                PrmOneTimeDueLastDayOfMonth
                    label is "DayOfTheMonth__Or_____DueOnTheLastDayOfTheMonth"
                        left of field
                PrmOneTimeDueTime
                    label is "At"
                PrmOneTimeDueTimeSensitive
                    label is "IsTimeSensitive"
                        left of field
            paragraph
                PrmOneTimeDueDayForNextMonth
                    label is "ForTheMonthFollowingThePeriod"
        blank line
        two column
            PrmOneTimeHoursRequired
                label is "EstimatedHoursToComplete"
            PrmOneTimeScheduleForWorkDaysOnly
                label is "ScheduleTaskForWorkDaysOnly"
        header3 of "RequirementsForCompletion"
        single column
            paragraph
                PrmRequiresApproval
                    label is "Approval"
                visible when (PrmRequiresApproval)
                    PrmApprovalCode
                        label is "ApprovalCode"
                        select is ApprovalCodesWithLevels
                    PrmApprovalCode.Description
                        no label
                        display as text
            PrmRequireSupportingDoco
                label is "AttachSupportingDocumentation"
            PrmRequireJournalEntry
                label is "AttachJournalEntryDetail"
        header3 of "Visibility"
        two column
            PrmPriority
                label is "Priority"
            PrmRisk
                label is "Risk"
