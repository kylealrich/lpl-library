ExpiredContracts is an ActionForm
    action is ExpiredContracts
    Layout
        single column
            paragraph
                OplCompany
                    label is "Company"
                    select is Companies
                OplCompany.Name
                    no label
                    display as text
        two column distributed
            column1
                OplBegDate
                    label is "FromDate"
            column2
                OplEndDate
                    label is "ToDate"
        single column
            text of "Or"
        two column distributed
            column1
                paragraph
                    FrAddSubtract
                        label is "FromDateAdjustment"
                    FrDays
                        label is "Days"
            column2
                paragraph
                    ToAddSubtract
                        label is "ToDateAdjustment"
                    ToDays
                        label is "Days"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ExpiredContractsReport_RDG
            column2 of 25%
                ExpiredContractsReport_XPT
