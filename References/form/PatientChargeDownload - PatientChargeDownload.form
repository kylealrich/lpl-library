PatientChargeDownload is an ActionForm
    action is PatientChargeDownload
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        single column
            HprRevCenter
                label is "RevenueCenter"
                compact format
            FileType
                label is "TypeOfFile"
        header2 of "SendToBilling"
        single column
            BatchNbr
                label is "Batch"
            blank line
            ThruDate
                label is "ThroughDate\\,Time"
            text of "\\or"
                bold
            ThruDay
                label is "ThroughDay\\,Time"
        header2 of "ResendToBilling"
        single column
            ResendBatch
        header2 of "SelectByDateRange"
        paragraph
            FrDateOfChrg
                label is "FromDate_ofCharge"
            ToDateOfChrg
                label is "ToDate_ofCharge"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                PatientChargeDownloadReport_RDG
            column2 of 25%
                PatientChargeDownloadReport_XPT
