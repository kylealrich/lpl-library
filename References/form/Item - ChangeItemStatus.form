ChangeItemStatus is an ActionForm
    action is ChangeItemStatus
    Layout
        single column
            display as text
                ItemGroup
                paragraph
                    Item
                    Description
                        no label
            PrmStatus
        visible when (PrmStatus.Active)
            single column
                visible when (HasVendorItems)
                    PrmActivateAllVendorItems
                visible when (HasSomeLocations)
                    PrmActivateAllItemLocations
                button of "ViewInactiveVendorItems"
                    visible when (HasInactiveVendorItem)
                    link is InactiveVendorItemNav
                    display as link
                button of "ViewInactiveItemLocations"
                    visible when (HasSomeLocations)
                    link is InactiveItemLocationNav
                    display as link
        visible when (PrmStatus.Inactive)
            single column
                visible when (not NotAvailableForUse)
                    PrmMakeItemNotAvailableForUse
                visible when (PrmMakeItemNotAvailableForUse)
                    visible when (HasOpenContractLines)
                        PrmResetContractLinesToSpecialUsing
                button of "ViewActiveVendorItems"
                    visible when (HasActiveVendorItemRel)
                    link is VendorItemNav
                    display as link
                button of "ViewActiveItemLocations"
                    visible when (HasSomeLocations)
                    link is ActiveItemLocationNav
                    display as link
                blank line
