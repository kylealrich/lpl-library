RecallNoticeSummary is a SummaryForm
    title is "Notice#<RecallNotice>"
    Layout
        header2 of "Notice#<RecallNotice>"
            show border color of black
            shade
            center
        header2 of "_"
        single column
            Name
            Description
                use text area of 4 lines
        two column
            RecallType
            Equipment
        two column
            RecallDate
            RecallReceivedDate
        two column
            RecallSource
        two column
            visible when (ManufactureDateRange entered)
                paragraph
                    text of "ManufactureDateRange:"
                    ManufactureDateRange.Begin
                        no label
                    text of "-"
                    ManufactureDateRange.End
                        no label
            visible when (DistributionDateRange entered)
                paragraph
                    text of "DistributionDateRange:"
                    DistributionDateRange.Begin
                        no label
                    text of "-"
                    DistributionDateRange.End
                        no label
        two column
            ManufacturerName
                label is "Manufacturer"
            paragraph
                ManufacturerGln
                MfgGlobalLocationNumberRel.Description
                    no label
        two column
            ManufacturerAddress
                form is PostalAddressMinimum
            ManufacturerContact.FirstAndLastName
                label is "ManufacturerContact"
        two column
            ManufacturerPhone
                no label
            ManufacturerEmail
                no label
        two column
            FDAClassification
            FDADistrict
        two column
            FDAComments
        two column
            RecallCoordinator.RecallUserName
                label is "Coordinator"
        two column
            RecallCoordinator.Employee.EmployeeWorkEmailAddress
                label is "Email"
            RecallCoordinator.Employee.EmployeeWorkTelephone
                label is "Phone"
