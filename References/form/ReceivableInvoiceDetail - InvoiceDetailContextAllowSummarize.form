InvoiceDetailContextAllowSummarize is a Form
    Layout
        visible when (not SummarizeDetail)
            four column distributed
                column1
                    display as text
                        paragraph
                            Company.RepresentativeText
                                label is "Company"
                            visible when (IsNonBaseCurrency)
                                Company.Currency
                                    label is "Currency"
                        paragraph
                            Customer.RepresentativeText
                        paragraph
                            visible when (DerivedMessage entered)
                                text of "Note:"
                                    header4
                                    bold
                                    color of red
                                DerivedMessage
                                    label is "_"
                                    header4
                                    bold
                                    color of red
                column2
                    paragraph
                        button of "<InvoiceDetailGroupField>"
                            link is ReceivableInvoiceNav
                            label is "Invoice"
                            header4
                            bold
                            display as link
                    paragraph
                        DerivedDescription
                            display as text
                column3
                    display as text
                        paragraph
                            TransactionDate
                            GeneralLedgerDate
                        paragraph
                            Status
                                display as tag
                                    color of gray when (Status.Unreleased)
                                    color of green when (Status.OpenTransaction)
                                    color of gray
                column4
                    display as text
                        paragraph
                            TransientSignedTransactionAmount
                                label is "InvoiceAmount"
                                    header4
                                    bold
                                header4
                                bold
                            visible when (DerivedOpenAmount entered)
                                DerivedOpenAmount
                                    label is "Open"
                                        header4
                                        bold
                                        color of red
                                    header4
                                    bold
                                    color of red
                            visible when (DerivedOpenAmount not entered)
                                DerivedOpenAmount
                                    label is "Open"
                                        header4
                                        bold
                                        color of green
                                    header4
                                    bold
                                    color of green
                            visible when (IsNonBaseCurrency)
                                OriginalCurrency
                                    header4
                                    bold
        visible when (SummarizeDetail)
            four column distributed
                column1
                    display as text
                        paragraph
                            Company.RepresentativeText
                                label is "Company"
                            visible when (IsNonBaseCurrency)
                                Company.Currency
                                    label is "Currency"
                        paragraph
                            Customer.RepresentativeText
                        paragraph
                            visible when (DerivedMessage entered)
                                text of "Note:"
                                    header4
                                    bold
                                    color of red
                                DerivedMessage
                                    label is "_"
                                    header4
                                    bold
                                    color of red
                column2
                    paragraph
                        button of "<SummarizedInvoiceNumberTitle>"
                            link is ReceivableInvoiceNav
                            label is "Invoice"
                            header4
                            bold
                            display as link
                    paragraph
                        ReceivableInvoiceRel.Description
                            label is "Description"
                            display as text
                column3
                    display as text
                        paragraph
                            TransactionDate
                            GeneralLedgerDate
                        paragraph
                            ReceivableInvoiceRel.Status
                                label is "Status"
                                display as tag
                                    color of gray when (ReceivableInvoiceRel.Status.Unreleased)
                                    color of green
                column4
                    display as text
                        paragraph
                            ReceivableInvoiceRel.TransientSignedTransactionAmount
                                label is "InvoiceAmount"
                                    header4
                                    bold
                                header4
                                bold
                            visible when (ReceivableInvoiceRel.OpenReceivableInvoiceAmountSigned entered)
                                ReceivableInvoiceRel.OpenReceivableInvoiceAmountSigned
                                    label is "Open"
                                        header4
                                        bold
                                        color of red
                                    header4
                                    bold
                                    color of red
                                visible when (IsNonBaseCurrency)
                                    OriginalCurrency
                                        label is "_"
                                        header4
                                        color of red
                            visible when (ReceivableInvoiceRel.OpenReceivableInvoiceAmountSigned not entered)
                                ReceivableInvoiceRel.OpenReceivableInvoiceAmountSigned
                                    label is "Open"
                                        header4
                                        bold
                                        color of green
                                    header4
                                    bold
                                    color of green
                                visible when (IsNonBaseCurrency)
                                    OriginalCurrency
                                        label is "_"
                                        header4
                                        color of green
