UpdateHeaderContext is a Form
    title is "<DerivedTransferTypeLabel>"
    Layout
        visible when (RecordExists)
            two column distributed
                column1
                    display as text
                        paragraph
                            CashCode.CashCodeAndDescription
                                label is "<DerivedTransactionTypeLabel>CashCode"
                            CashCode.Currency
                                no label
                        Status
                        paragraph
                            TransferBankAmountUnsigned
                                label is "Amount"
                            visible when (IsUnreleased)
                                AppliedBankAmount
                                    label is "AppliedBankAmount"
                                BalanceAmount
                                    label is "Balance"
                                AppliedBaseAmount
                                    label is "AppliedBaseAmount"
                        paragraph
                            visible when (BudgetEditInProgress)
                                text of "BudgetEditsInProgress"
                                    bold
                                    color of red
                            visible when (BudgetEditFailure)
                                text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                                    bold
                                    color of red
                column2
                    display as text
                        paragraph
                            CashLedgerFundTransferHeader
                                label is "TransferNumber"
                            visible when (CashLedgerTransactionIdentifierExists)
                                DerivedTransactionIdentifier
                                    label is "TransactionIdentifier"
