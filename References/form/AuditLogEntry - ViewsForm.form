ViewsForm is a Form
    title is "ViewDetails"
    disable field options
    called out actions only
    Actions
        action is refresh
        action is export to pdf
    Layout
        paragraph
            BusinessView
                header1
                display as text
            visible when (UIType entered)
                UIType
                    header1
                    display as text
            visible when (UIName entered)
                UIName
                    header1
                    display as text
        visible when (InstanceSelection entered)
            paragraph
                InstanceSelection
                    display as text
        single column
            Fields
                display as text
        three column
            column1
                text of "Who"
                    header3
                Actor
                    no label
                    display only
                    raise yellow alert when (AuthenticatedActorIsDifferent)
                        mouse over text is "Authenticated_Actor:<AuthenticatedActor>"
            column2
                text of "When"
                    header3
                SystemStamp
                    no label
                    display only
            column3
                text of "How"
                    header3
                AccessType
                    no label
                    display only
        single column
            text of "_"
            text of "_"
            text of "UniqueID"
                header3
            visible when (BOUniqueID entered)
                BOUniqueID
                    label is "BusinessClassRecord"
                    display only
            FolderUID
                label is "UserFolderRecord"
                display only
            visible when (AsyncTriggerUID entered)
                AsyncTriggerUID
                    label is "AsyncTriggerRecord"
                    display only
