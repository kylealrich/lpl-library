PriceListItemContextForm is a Form
    Layout
        paragraph
            Company
                display as text
            Company.Name
                no label
                display as text
        paragraph
            visible when (PriceListContractPromotion.IsPriceList)
                PriceListContractPromotion.ListName
                    label is "PriceList"
                    display as text
                PriceListContractPromotion.Description
                    no label
                    display as text
        paragraph
            visible when (PriceListContractPromotion.IsContract)
                PriceListContractPromotion.Customer
                    label is "Customer"
                    display as text
                PriceListContractPromotion.Description
                    no label
                    display as text
        paragraph
            visible when (PriceListContractPromotion.IsContract)
                PriceListContractPromotion.ListName
                    label is "Contract"
                    display as text
                PriceListContractPromotion.Description
                    no label
                    display as text
        paragraph
            visible when (PriceListContractPromotion.IsPromotion)
                PriceListContractPromotion.ListName
                    label is "PriceList"
                    display as text
                PriceListContractPromotion.PriceListContractPromotionForUIRel.Description
                    no label
                    display as text
        paragraph
            visible when (PriceListContractPromotion.IsPromotion)
                PriceListContractPromotion.Promotion
                    label is "Promotion"
                    display as text
                PriceListContractPromotion.Description
                    no label
                    display as text
        paragraph
            Item
            Item.Description
                no label
                display as text
