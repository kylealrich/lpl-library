CreateNSFRecordContextForm is a Form
    title is "NonSufficientFunds"
    Layout
        four column table
            column1
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivityBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                        initial value is StudentActivitySchool.DefaultBankAccount
                paragraph
                    BankTransactionType
                        label is "TransactionType"
                        display as text
                        initial value is 40
                paragraph
                    Description
                paragraph
                    NSFPaymentNumber
                        label is "ReturnedPaymentNumber"
                header3 of "BankFee"
                paragraph
                    NSFFeeTransactionNumber
                        label is "FeeTransactionNumber"
                paragraph
                    NSFFeeAccount
                        label is "FeeAccount"
                        compact format
                        select is SchoolActivityAccountSelectList
                paragraph
                    NSFStudentRecord
                        label is "ChargeFeeToStudent"
                        select is StudentBySchoolList
            column2
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    StudentActivityBankAccount.Description
                        no label
                        display as text
                paragraph
                    StudentActivityBankTransaction
                        label is "TransactionNumber"
                        select is BankTransactions
                paragraph
                    TransactionAmount
                        label is "Amount"
                paragraph
                    NSFRelatedReceiptRecord
                        label is "RelatedReceiptRecord"
                        select is StudentActivityDepositedReceiptList
                blank line
                paragraph
                    NSFFeeAmount
                        label is "FeeAmount"
                paragraph
                    NSFFeeAccount.Description
                        no label
                        display as text
                paragraph
                    NSFStudentRecord.StudentFirstName
                        no label
                        display as text
                    NSFStudentRecord.StudentLastName
                        no label
                        display as text
            column3
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                blank line
                paragraph
                    TransactionDate
                paragraph
                    AmountType
                        display as text
                        initial value is 1
                paragraph
                    NSFReDeposit
                        label is "CreateNewReceiptForRedeposit"
            column4
                blank line
                blank line
                paragraph
                    Status
                        display as text
                blank line
                visible when (NSFReDepositReceiptNumber entered)
                    paragraph
                        NSFReDepositReceiptNumber
                            label is "NewReceiptNumber"
                            display as text
