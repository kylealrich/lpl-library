ApplyACreditToThisPaymentActionForm is an ActionForm
    action is Released.ApplyACreditToThisInvoice
    title is "ApplyACreditToThisInvoice"
    Layout
        paragraph
            PrmCompany
                label is "Company"
                display as text
            PrmVendor
                label is "Vendor"
                display as text
        three column
            column1
                PrmInvoiceNumber
                    label is "CreditInvoiceNumber"
            column2
                text of "Or"
            column3
                PrmPayablesInvoice
                    label is "SelectCreditID"
                    select is CreditsAvailableToApplyToInvoice
        paragraph
            PrmPayablesInvoice.DerivedUnappliedAmount
                label is "UnappliedAmount_-Credit"
                display as text
        paragraph
            DerivedUnappliedAmount
                label is "UnappliedAmount_-Invoice"
                display as text
        paragraph
            PrmAppliedAmount
                label is "AppliedAmount"
