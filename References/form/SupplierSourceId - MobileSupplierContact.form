MobileSupplierContact is a Form
    title is "SupplierContact"
    restrict action NewContact
    restrict action BuyerCreateContacts
    restrict action Delete
    restrict action Create
    restrict action NewContact
    restrict action SupplierUpdate
    restrict action AttachToEvent
    restrict action EmailToSupplierContacts
    restrict action AttachToEventAsPlanHolder
    restrict action ForgotUserName
    restrict action UpdateSupplierBankInformation
    restrict action UpdateSupplierPortalInformation
    restrict action UpdateSupplierBankCountry
    restrict action CreateVendorLocation
    restrict action InactivateContact
    restrict action InactivateSupplierContact
    restrict action MobileUpdateContactBankInformation
    restrict action MobileUpdateSupplierBankInformation
    Actions
        action is save
            action icon is save
            label is "_"
            hide when invalid
    Layout
        display as text
            single column
                DerivedSupplierSourceNameID
                    label is "SupplierContact"
            two column
                column1 of 50%
                    DerivedTelephoneNumber
                column2 of 50%
                    visible when (TelephoneNumber entered)
                        button of icon.phone
                            link is "tel:<SupplierSourceId.TelephoneNumber>"
            two column
                column1 of 50%
                    DerivedMobileNumber
                column2 of 50%
                    visible when (MobilePhone entered)
                        button of icon.phone
                            link is "tel:<SupplierSourceId.MobilePhone>"
            two column
                column1 of 50%
                    EmailAddress
                column2 of 50%
                    visible when (EmailAddress entered)
                        button of icon.mail
                            link is "mailto:<SupplierSourceId.EmailAddress>"
            single column
                LocationAddress.DisplayAddressCommaSeparated
                    label is "StreetAddress"
