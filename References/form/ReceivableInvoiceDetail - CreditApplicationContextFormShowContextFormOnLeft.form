CreditApplicationContextFormShowContextFormOnLeft is a Form
    title is "CreditApplication"
    Layout
        visible when (false)
            TransientIsolatedReceivableCompany
        display as text
            single column
                paragraph
                    Company.RepresentativeText
                        label is "Company"
                    visible when (IsNonBaseCurrency)
                        Company.Currency
                            no label
            single column
                paragraph
                    BatchNumber
                        label is "Batch"
                    ReceivableInvoiceDetail.Invoice
                        label is "CreditMemo"
                    visible when (InvoiceDetailAllowSummarizeShowMain)
                        ReceivableInvoiceDetail.PaymentSeq
                            label is "Sequence"
                paragraph
                    Description
            single column
                paragraph
                    Customer.RepresentativeText
                paragraph
                    ReceivableProcessLevel.RepresentativeText
                paragraph
                    TransactionDate
                    GeneralLedgerDate
            visible when (IsNonBaseCurrency)
                header3 of "TransactionSummary_(<OriginalCurrency>)"
            visible when (not IsNonBaseCurrency)
                header3 of "TransactionSummary"
            single column table
                row headers
                    "Original"
                    "Applied"
                    "Adjusted"
                    "Open"
                column1
                    DisplaySignedTransactionAmount
                        no label
                        header4
                        right align
                        display as text
                    DisplaySignedAppliedAmount
                        no label
                        header4
                        right align
                        display as text
                    DisplaySignedAdjustAmount
                        no label
                        header4
                        right align
                        display as text
                    DerivedOpenAmount
                        no label
                        header4
                        right align
                        display as text
