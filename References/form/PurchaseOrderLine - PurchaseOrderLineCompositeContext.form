PurchaseOrderLineCompositeContext is a Form
    Layout
        four column distributed
            column1
                display as text
                    paragraph
                        Company.RepresentativeText
                            label is "Company"
                        visible when (false)
                            FinanceEnterpriseGroup
                    paragraph
                        PurchaseOrder
                        PurchaseOrder.PurchaseOrderRevision
                            label is "Revision"
                        LineNumber
                            label is "Line"
                    visible when (PurchaseOrder.HasPurchaseFromLocation)
                        PurchaseOrder.PurchaseFromLocation.RepresentativeText
                            label is "PurchaseFrom"
            column2
                display as text
                    PurchaseOrder.Buyer.RepresentativeText
                    PurchaseOrder.Vendor.RepresentativeText
                    PurchaseOrder.ShipToLocation.RepresentativeText
                        label is "ShipTo"
            column3
                display as text
                    PurchaseOrder.PurchaseOrderDate
                    PurchaseOrder.DefaultDeliveryDate
                        label is "DeliveryDate"
                    paragraph
                        PurchaseOrder.MobileTotalWithCurrencyDisplay
                            label is "PurchaseOrderTotal"
            column4
                display as text
                    PurchaseOrder.DerivedPurchaseOrderStatus
                        label is "POStatus"
                    DerivedStatus
                        label is "LineStatus"
                    paragraph
                        CancelledOrReturnMessage
                            no label
                            display as tag
                                color of gray
        paragraph
            visible when (AssetTemplateExists)
                visible when (AssetDefaultExists)
                    single column
                        button of "ManageAssetDefaults"
                            link is AssetDefaults
                visible when (not AssetDefaultExists)
                    single column
                        button of "CreateAssetDefaults"
                            action is CreateAssetDefaults
            paragraph
                visible when (MissingDistribution)
                    MissingDistributionMsg
                        no label
                        display as tag
                            color of yellow
            visible when (DistributionsExistButNotInBalance)
                paragraph
                    RemainingToBeDistributed
                        no label
                    visible when (DistributionBy.ByQuantity)
                        RemainingQuantityToBeDistributed
                            no label
                        EnteredBuyUOM
                            no label
                    visible when (DistributionBy.ByAmount)
                        RemainingAmountToBeDistributed
                            no label
                        PurchaseOrder.Currency
                            no label
                    visible when (DistributionBy.ByPercent)
                        RemainingPercentToBeDistributed
                            no label
            paragraph
                visible when (OriginalItemExists)
                    SubstituteItemMsg
                        no label
                        display as tag
                            color of yellow
            paragraph
                visible when (ItemIsBackorderedForOpenPOLine)
                    VendorBackorderMessage
                        no label
                        display as tag
                            color of yellow
