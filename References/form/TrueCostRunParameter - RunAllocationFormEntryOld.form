RunAllocationFormEntryOld is a Form
    title is "True\\CostAllocationControl"
    Layout
        two column
            column1
                header3 of "RunOptions"
                RunName
                RunDescription
                Allocation
                AllocationGroup
                MultiMonthFlag
                visible when (not MultiMonthFlag)
                    AllocationPostDate
                visible when (MultiMonthFlag)
                    FromAllocationPostDate
                    ToAllocationPostDate
                FromStep
                ToStep
                single column
                header3 of "UseLedgers"
                UseActualLedger
                UseCapacityLedger
                single column
                header3 of "SourceBalanceOptions"
                SourceBalanceOption
                    no label
            column2
                header3 of "ReportOptions"
                GenerateListingData
                visible when (GenerateListingData)
                    GenerateSourceValue
