FailureExceptionSummaryForm is a SummaryForm
    title is "ExceptionStackTrace<AsyncActionRequest.Name>"
    Layout
        two column
            AsyncActionRequest
                label is "Request"
            paragraph
                AsyncActionTrigger
                    label is "Trigger"
                text of "(<UniqueID>)"
        two column
            Status
            FailureCode
        two column
            AsyncQueueDefinition
                label is "Queue"
        two column
            AsyncActionRequest.Actor
                label is "Actor"
            AsyncActionRequest.AuthenticatedActor
            AsyncActionRequest.IsProxy
        two column
            NotificationInformation.DerEmailAddressMulti
            NotificationInformation.NotificationType
        two column
            RuntimeData
            RemoteRuntimeData
        single column
            AsyncLogProducer
                label is "LogProducerName"
        header2 of "Action"
        two column
            AsyncActionRequest.ActionType
            AsyncActionRequest.DataArea
        two column
            AsyncActionRequest.Group
                label is "Module"
            AsyncActionRequest.ImplementingClass
        two column
            AsyncActionRequest.AsyncAction
        paragraph
            AsyncActionRequest.ActionParameters
                label is "Parameters"
                use text area
        header2 of "Auditing"
        paragraph
            RequestedStart medium timestamp using user time zone show time zone
            create stamp medium timestamp using user time zone show time zone
                label is "Created"
        paragraph
            Started medium timestamp using user time zone show time zone
            Finished medium timestamp using user time zone show time zone
        visible when (AdditionalInformationEntered)
            header2 of "AdditionalInformation"
            AdditionalInfo
            header2 of "_"
        header2 of "ErrorMessage"
        ErrorMessage
        header2 of "StackTrace"
        Result
            use text area
        header2 of "RetryInformation"
        paragraph
            RetryStart
            MaxRetries
            RetryCount
        visible when (HasRunOnErrorAction)
            paragraph
                RunOnErrorRetryStart
                RunOnErrorRetryCount
        visible when (not AsyncActionRequest.SystemRequest.No)
            header2 of "AttemptInformation"
            paragraph
                AttemptCount
                MaxSystemAutoAttempt
                    label is "MaximumAutoAttempts"
