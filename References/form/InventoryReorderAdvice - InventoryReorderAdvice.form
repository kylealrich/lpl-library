InventoryReorderAdvice is an ActionForm
    action is InventoryReorderAdvice
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        blank line
        three column
            column1
                paragraph
                    Location
                        show up to 10 characters
                    Location.Name
                        no label
                        display as text
            column2
                text of "\\or"
                    bold
            column3
                paragraph
                    ReportGrp
                        label is "ReportGroup"
                    ReportGrp.Name
                        no label
                        display as text
        blank line
        paragraph
            BuyerCode
                label is "Buyer"
            BuyerCode.Employee.PresentationNameSnapshot
                no label
                display as text
        two column distributed
            column1
                paragraph
                    PurchMajcl
                        label is "MajorPurchasingClass"
                        show up to 10 characters
                    PurchMajcl.Description
                        no label
                        display as text
            column2
                paragraph
                    PurchMincl
                        label is "MinorPurchasingClass"
                        show up to 10 characters
                    PurchMincl.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    InvenMajcl
                        label is "MajorInventoryClass"
                        show up to 10 characters
                    InvenMajcl.Description
                        no label
                        display as text
            column2
                paragraph
                    InvenMincl
                        label is "MinorInventoryClass"
                        show up to 10 characters
                    InvenMincl.Description
                        no label
                        display as text
        two column distributed
            column1
                paragraph
                    SortOption
                        label is "Sequence"
                        show up to 25 characters
            column2
                IncludeInactive
                    label is "IncludeInactiveItems"
        single column
            ConsignmentItems
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                InventoryReorderAdviceReport_RDG
            column2 of 25%
                InventoryReorderAdviceReport_XPT
