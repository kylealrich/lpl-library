UserSummaryComposite is a CompositeForm
    title is "Task<RecallNoticeTask>DetailsFor<Owner.FirstLastName>"
    context form is UserSummaryContext
        background is theme color
    Actions
        action is New.AcceptTask
            action icon is approve
            hide when invalid
            valid when (TaskCanBeAccepted)
        action is Accepted.CompleteTask
            action icon is approve
            hide when invalid
            valid when (TaskCanBeCompleted)
        action is AskAQuestion
            action icon is request
            hide when invalid
            valid when (RecallNotice.ActiveRecallNotice)
        navigation is RecallDocumentReport
            action icon is print
            label is "PrintNotice"
        navigation is RecallTaskReport
            action icon is print
            label is "PrintTask"
        navigation is Resolutions
            action icon is claim
            label is "Resolutions"
            hide when invalid
            valid when (ShowResolutions)
        action is refresh
        action is save
    Products is a Panel
        visible when (HasRecallProductsNotManualReleased)
        list is RecallNoticeTaskProductRel.RecallNoticeTaskProductList
    Products2 is a Panel
        title is "Products"
        visible when (HasRecallProductsNotManualUnreleased)
        list is RecallNoticeTaskProductRel.RecallNoticeTaskProductListUnreleasedNotManual
    Products3 is a Panel
        title is "Products"
        visible when (HasRecallProductsManualReleased)
        list is RecallNoticeTaskProductRel.RecallNoticeTaskProductListReleasedManual
    Products4 is a Panel
        title is "Products"
        visible when (HasRecallProductsManualUnreleased)
        list is RecallNoticeTaskProductRel.RecallNoticeTaskProductListUnreleasedManual
    QuestionResponses is a Panel
        title is "QuestionsAndResponses"
        visible when (TaskWithQuestions)
        template is RecallNoticeTaskQuestion set
            business class is ResponseToRecallNoticeTaskQuestion
                form is ResponseToRecallNoticeTaskQuestion
    Comments is a Panel
        title is "CommentsAndAttachments<AttachmentCount>"
        visible when (not RecallNotice.PendingRecallNotice)
        list is RecallNoticeTaskAttachment set.RecallNoticeTaskAttachmentList
    QAndAForum is a Panel
        title is "Q&A"
        visible when (HasTaskOwnerQandA)
        list is TaskOwnerQandARel.RecallNoticeTaskQAndAList
