InvoiceAddOnChargesDetail is a Form
    Layout
        paragraph
            Company
                display as text
        paragraph
            BillingInvoice.DerivedDisplayBillingInvoice
                label is "BillingInvoice"
                display as text
        paragraph
            visible when (BillingInvoiceLine entered)
                BillingInvoiceLine
                    display as text
        paragraph
            visible when (BillingInvoiceLine entered)
                BillingInvoiceLine.Item
                    display as text
        paragraph
            BillingInvoiceAddOnCharge
                label is "Sequence"
                display as text
        paragraph
            Miscellaneous
                label is "Add-OnCharge"
                compact format
            Miscellaneous.Description
                no label
                display as text
        paragraph
            visible when (BillingInvoiceLine entered)
                EnteredUnitPrice.TransactionAmount
                    label is "UnitPrice"
        paragraph
            visible when (BillingInvoiceLine entered)
                UnitCost
        paragraph
            EnteredPrice.TransactionAmount
                label is "FlatAmount"
        paragraph
            Cost
        paragraph
            PricePercent
        paragraph
            CostPercent
        paragraph
            OrderDiscount
                label is "Discountable"
        paragraph
            TaxExemptCode
                label is "TaxExempt"
        paragraph
            TaxableAmount.TransactionAmount
                label is "Taxable"
                display as text
        paragraph
            SalesAccount
                compact format
        paragraph
            COGSAccount
                compact format
        visible when (TaxOutputDueAccount)
            paragraph
                EntityTaxCodeRel.TaxOutputDueAccount
                    label is "TaxAccount"
                    display only
                    compact format
        visible when (TaxOutputAccount)
            paragraph
                EntityTaxCodeRel.TaxOutputAccount
                    label is "TaxAccount"
                    display only
                    compact format
