Authorize is a Form
    Layout
        two column distributed
            VendorClaimType
            paragraph
                visible when (VendorReturnExists)
                    ReplaceGoods
                    visible when (ReplaceGoods)
                        VendorRequestedReplacementDate
                            label is "ReplacementDate"
                visible when (not VendorReturnExists)
                    TransientReplaceGoods
                    visible when (not TransientReplaceGoods.No)
                        VendorRequestedReplacementDate
                            label is "ReplacementDate"
        two column distributed
            ShipOrHold
                label is "ShipOrHoldGoods"
            paragraph
                ProcessLevel
                ProcessLevel.Name
                    no label
                    display as text
        two column distributed
            paragraph
                PurchaseFromLocation
                    label is "VendorReturnTo"
                    select is POPurchaseFromLocations
                PurchaseFromLocation.VendorLocation.VendorName
                    no label
                    display as text
            ReturnMaterialAuthorizationNumber
                label is "ReturnMaterialAuthorizationNumber"
        two column distributed
            VendorReturnShippingMethod
                label is "ReturnShipVia"
            ReplacementPurchaseOrderShippingMethod
                label is "ReplacementShipVia"
        two column distributed
            Contact
            PhoneNumber
        two column distributed
            column1
                header2 of "OriginalFreightCredit"
                OriginalFreightCreditAmount
                    label is "Amount"
                OriginalFreightCreditAccount
                    label is "Account"
                    compact format
            column2
                header2 of "ReturnToVendorFreightCredit"
                ReturnToVendorFreightCreditAmount
                    label is "Amount"
                ReturnToVendorFreightCreditAccount
                    label is "Account"
                    compact format
        two column distributed
            column1
                header2 of "HandlingCharge"
                HandlingAmount
                HandlingAccount
                    compact format
            column2
                header2 of "ReplaceFreightCharge"
                ReplacementFreightAmount
                    label is "Amount"
                    display as required when (ReplacementFreightAmountRequired)
                    when value changed
                        refresh AddOnChargeRequired
                paragraph
                    AddOnCharge
                        label is "Add\\-\\OnCostCode"
                        select is ActiveAddOnCostCodes
                        display as required when (AddOnChargeRequired)
                        when value changed
                            refresh ReplacementFreightAmountRequired
                    AddOnCharge.Description
                        no label
                        display as text
