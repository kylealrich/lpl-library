BOE is a Form
    Layout
        four column
            column1
                BillOfExchAcceptAccounting
                    label is "AcceptanceAccountingOption"
                BillOfExchangeNumberingType
                    label is "B\\O\\ENumber"
            column2
                ProcessBOEOnRemittance
                    label is "RemittanceControl"
                DerivedLastBillOfExchangeNumber
                    label is "LastB\\O\\ENumber"
                    display as text
                    display zero
            column3
                DerivedLastBOERemittanceNumber
                    label is "LastRemittanceNumber"
                    display as text
                    display zero
                BillOfExchangeBankRisk
                    label is "CheckBankRisk"
            column4
                paragraph
                    BOEDiscountRemittanceBankCode
                        label is "DiscountedRemitPaymentCode"
                        select is BankServices
                    BOEDiscountRemittanceBankCode.Description
                        no label
                        display as text
                button of "ChangeLastNumbers"
                    action is ChangeLastBOENumbers
                    display as link
        blank line
        header2 of "GlobalLedgerAccountCodes"
        visible when (not IsReceivableCompany)
            paragraph
                BOEAcceptanceRGLCode
                    label is "AcceptanceCode"
                BOEAcceptanceRGLCodeDescription
                    no label
            paragraph
                BOEAcceptanceRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                BOEFinancialRevenueRGLCode
                    label is "FinancialRevenueCode"
                BOEFinancialRevenueRGLCodeDescription
                    no label
            paragraph
                BOEFinancialRevenueRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                BOEFinancialExpenseRGLCode
                    label is "FinancialExpenseCode"
                BOEFinancialExpenseRGLCodeDescription
                    no label
            paragraph
                BOEFinancialExpenseRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
            paragraph
                BOEDishonoredExpenseRGLCode
                    label is "DishonoredCode"
                BOEDishonoredExpenseRGLCodeDescription
                    no label
            paragraph
                BOEDishonoredExpenseRGLCodeAccount
                    label is "GlobalLedgerAccount"
                    compact format
        visible when (IsReceivableCompany)
            paragraph
                BOEAcceptanceReceivableGeneralLedgerCode
                    label is "AcceptanceCode"
                BOEAcceptanceReceivableGeneralLedgerCode.Description
                    no label
                    display as text
            paragraph
                BOEAcceptanceReceivableGeneralLedgerCode.DistributionAccount
                    label is "GlobalLedgerAccount"
                    display only
                    compact format
            paragraph
                BOEFinancialRevenueReceivableGeneralLedgerCode
                    label is "*FinancialRevenueCode"
                BOEFinancialRevenueReceivableGeneralLedgerCode.Description
                    no label
                    display as text
            paragraph
                BOEFinancialRevenueReceivableGeneralLedgerCode.DistributionAccount
                    label is "GlobalLedgerAccount"
                    display only
                    compact format
            paragraph
                BOEFinancialExpenseReceivableGeneralLedgerCode
                    label is "FinancialExpenseCode"
                BOEFinancialExpenseReceivableGeneralLedgerCode.Description
                    no label
                    display as text
            paragraph
                BOEFinancialExpenseReceivableGeneralLedgerCode.DistributionAccount
                    label is "GlobalLedgerAccount"
                    display only
                    compact format
            paragraph
                BOEDishonoredExpenseReceivableGeneralLedgerCode
                    label is "DishonoredCode"
                BOEDishonoredExpenseReceivableGeneralLedgerCode.Description
                    no label
                    display as text
            paragraph
                BOEDishonoredExpenseReceivableGeneralLedgerCode.DistributionAccount
                    label is "GlobalLedgerAccount"
