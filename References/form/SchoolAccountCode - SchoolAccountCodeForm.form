SchoolAccountCodeForm is a Form
    is primary
    title is "<mode>AccountCode"
    Actions
        action is Create
        action is save
        action is save and new
        action is Delete
        action is next record
        action is previous record
        action is refresh
    Layout
        two column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivitySchool
                        label is "School"
                        display when blank
                paragraph
                    SchoolAccountCode.StudentActivityAccountCode
                        select is AccountCodeList
                paragraph
                    SchoolAccountCode.StudentActivityAccountCode.CodeType
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                blank line
                paragraph
                    SchoolAccountCode.StudentActivityAccountCode.Description
        paragraph
            GLAccount
                label is "Account"
                compact format
        paragraph
            Active
