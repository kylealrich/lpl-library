ApprovalInformation is a Form
    Layout
        header2 of "ContractInformation"
        two column
            Contract
                display as text
            Contract.Name
                label is "ContractName"
                display as text
        two column
            Contract.WorkingContractID
                display as text
            Contract.WorkingContractType
                display as text
        two column
            SupplierAndName
                label is "Supplier"
                display as text
            Contract.SupplierSourceId.MainContact.FirstAndLastName
                label is "SupplierContact"
                display as text
        header2 of "ApprovalInformation"
        two column
            SupplierApprovalActor.FirstNameAndLastNameOrActor
                label is "SupplierContact"
                display as text
            SupplierApprovalComment
                label is "Comment"
                display as text
        two column
            PrimaryContactApprovalActor.FirstNameAndLastNameOrActor
                label is "PrimaryContact"
                display as text
            PrimaryContactApprovalComment
                label is "Comment"
                display as text
        three column
            FinalApproverActor.FirstNameAndLastNameOrActor
                label is "FinalApprover"
                display as text
            visible when (FinalApproverActorEntered)
                ActionTaken
                    label is "Action"
                    display as text
