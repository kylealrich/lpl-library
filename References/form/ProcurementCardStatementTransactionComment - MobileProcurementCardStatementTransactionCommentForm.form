MobileProcurementCardStatementTransactionCommentForm is a Form
    propagate as a drill
    title is "TransactionComment"
    Layout
        header2 of "StatementTransactionInformation"
            collapsible
                initially expanded
            display as text
                single column
                    ProcurementGroup.DerivedProcurementGroupName
                        label is "ProcurementGroup"
                    ProcurementCardStatementTransaction.Company.DerivedCompanyIDName
                        label is "CompanyName"
                    DerivedCardProgramNameDescription
                        label is "ProgramName"
                    DerivedCardTransaction
                        label is "Statement"
                    DisplayCardNumberAndName
                        label is "CardNumber"
                    ProcurementCardStatement.ShipToPostalCode
                        label is "ShipToPostalCode"
                    ProcurementCardStatement.ShipFromPostalCode
                        label is "ShipFromPostalCode"
                    ProcurementCardStatement.VatReferenceNumber
                        label is "V\\A\\TReferenceNumber"
                    ProcurementCardStatement.VatTaxRate
                        label is "V\\A\\TTaxRate"
                    ProcurementCardStatement.VatTaxAmount
                        label is "V\\A\\TTaxAmount"
                    ProcurementCardStatementTransaction.TransactionDate
                    DerivedMerchantName
                        label is "MerchantName"
                    ProcurementCardStatement.DestinationCountryCode
                    ProcurementCardStatementTransaction.UnitCost
        header3 of "Comment"
        single column
            Title
            CommentText
                use text area of 12 lines
        paragraph
            Attachment.File
            Attachment.Title
            visible when (false)
                Attachment.MimeType
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
