AssetReviewDetailPurge is an ActionForm
    action is AssetReviewDetailPurge
    title is "AssetReviewDetailPurge"
    Layout
        paragraph
            PrmCompany
                label is "Company"
        paragraph
            PrmAssetReview
                label is "ReviewDate"
        paragraph
            PrmReviewCode
                label is "ReviewCode"
                select is ReviewCodeCodeList
        paragraph
            PrmApprovalCode
                label is "ApprovalCode"
        paragraph
            PrmAssetOwner
                label is "AssetOwner"
            PrmAssetOwner.Name.FirstAndLastName
                no label
                display as text
        paragraph
            PrmAssetType
                label is "AssetType"
                compact format
                select is AssetTypesWithinCompany
            PrmAssetType.Description
                no label
                display as text
        paragraph
            PrmAssetDimensionGroup
                label is "AssetDimensionGroup"
            PrmAssetDimensionGroup.Description
                no label
                display as text
