BudgetEditErrorForm is a Form
    is primary
    propagate as a drill
    title is "BudgetEditError"
    Layout
        display as text
            two column distributed
                Scenario.ScenarioDescription
                    label is "Scenario"
                BudgetTemplate.BudgetTemplateDescription
                    label is "BudgetTemplate"
            visible when (true)
                two column distributed
                    BudgetGroup.DisplayMessage
                        label is "BudgetGroup"
                    BudgetTemplatePeriod
                        label is "Period"
                    BudgetGroup.DerivedCurrency
                        label is "EditCurrency"
                    paragraph
                        GroupNeedsRecalculation
                            label is "BudgetGroupNeedsRecalculation"
                            display as tag
                                color of green when (not GroupNeedsRecalculation)
                                color of yellow when (GroupNeedsRecalculation)
                header5 of "_"
                two column distributed
                    column1
                        DerivedCurrentBudgetAmount
                            label is "Budget"
                    column2
                        visible when (IsToDateBudget)
                            DerivedCurrentCommitmentAmount
                                label is "ObligationsAsOf<BudgetTemplatePeriod>"
                        visible when (not IsToDateBudget)
                            DerivedCurrentCommitmentAmount
                                label is "Obligations"
                visible when (IsToDateBudget)
                    two column distributed
                        DerivedFutureCommitmentAmount
                            label is "ObligationsAfter<BudgetTemplatePeriod>"
                        FutureCommitmentPeriod
                            label is "ObligationPeriod<BudgetTemplatePeriod>"
                single column
                    visible when (IsToDateBudget)
                        ExistingCommitmentAmount
                            label is "TotalExistingObligations"
                    AvailableBudget
                    visible when (not IsBudgetChangeError)
                        AvailableBudgetWithTolerance
                        DerivedChangeAmount
                            label is "TransactionAmount"
                        OverBudgetAmountWithTolerance
                            label is "OverBudget"
                two column distributed
                    visible when (IsBudgetChangeError)
                        DerivedChangeAmount
                            label is "BudgetChangeAmount"
                        BudgetAfterChange
                            label is "AvailableBudgetAfterChange"
                single column
                    visible when (BudgetTemplate.ToleranceOption.Percentage)
                        BudgetGroup.BudgetTemplate.Tolerance
                    visible when (BudgetTemplate.ToleranceOption.Amount)
                        BudgetGroup.BudgetTemplate.ToleranceAmount
