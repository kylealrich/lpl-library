DisplayHeaderContext is a Form
    Actions
        action is refresh
            label is "_"
    Layout
        display as text
            six column
                Company
                SourcingEvent
                    label is "Event#"
                LastVersionNumber
                    label is "Amendments"
                Name
                DerivedStatus
                    label is "Status"
                NumberOfSourcingEventLines
                    label is "Number_ofLines"
            six column
                OpenDate
                CloseDate
                RequestedDeliveryDate
                QandAOpenDate
                QandACloseDate
                DisputeCloseDate
            visible when (EventStillSealed)
                single column
                    text of "EventHasResponsesButTheyAreSealed"
                        bold
                        color of red
