UserForm is a Form
    is primary
    Layout
        paragraph
            BusinessView
                label is "<BusinessViewLabel>"
            BusinessForm
                label is "Form"
            TBusinessForm
                label is "OriginatedFrom"
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        paragraph
            UserForm
                label is "UserFormId"
            Description
        three column
            Actor
            UserFolder
                label is "UserFolder"
            UserFolder.Name
                no label
                align as label
                display as text
        single column
            LPL
                use text area of 30 lines
            visible when (Independent)
                LPLIndex
                    display only
                    use text area of 12 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 10 lines
