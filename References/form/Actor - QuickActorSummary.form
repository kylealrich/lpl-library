QuickActorSummary is a SummaryForm
    title is "<Actor>QuickSummary"
    Layout
        header3 of "Locale"
        single column
            IsoLocale
                compact format
            DefaultUICalendar
        header3 of "PersonalInformation"
        single column
            Actor
            IsActorDisabled
            PersonName.FormOfAddress
                label is "Prefix"
        paragraph
            PersonName.FamilyName
            PersonName.GivenName
        paragraph
            PersonName.MiddleName
            PersonName.PreferredGivenName
        header3 of "ContactInformation"
        single column
            ContactInfo.TelephoneNumber
            ContactInfo.MobilePhone
                label is "MobilePhone"
            ContactInfo.EmailAddress
            ContactInfo.AlternateEmail
            ContactInfo.InstantMessengerInfo
        header3 of "Address"
        single column
            ContactInfo.PostalAddress
