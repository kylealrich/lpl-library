RecurringInvoiceTemplateLineContextForm is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                        label is "Company"
                column2
                    RecurringInvoiceTemplate.ReceivableInvoiceType
                        label is "Type"
                column3
                    RecurringInvoiceTemplate.RecurringInvoiceTemplate
                        label is "InvoiceTemplate"
                column4
            visible when (RecurringInvoiceTemplateLine entered)
                four column distributed
                    column1
                        RecurringInvoiceTemplateLine
                            label is "Line"
                    column2
                        ExtendedAmount
                            label is "ExtendedAmount"
