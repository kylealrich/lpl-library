ShippingInformationForm is a Form
    title is "ShippingInformation"
    Layout
        two column distributed
            column1
                header3 of "PurchaseOrderBillTo"
                PurchaseOrderBillToName
                    label is "Name"
                PurchaseOrderBillToContact
                    label is "Contact"
                PurchaseOrderBillToEmailAddress
                    label is "EmailAddress"
                PurchaseOrderBillToAddress
                    form is PostalAddressShortNotRequired
                PurchaseOrderBillToPhoneNumber
            column2
                header3 of "Dropship_/AlternateShipToAddress"
                single column
                paragraph
                    Dropship
                    visible when (Dropship)
                        text of "ReceivingIsNotAllowed,DropshipAddressRequired"
                            header4
                            italics
                            color of red
                    visible when (not Dropship)
                        text of "ReceivingIsRequired,CanEnterAlternateShipToAddress"
                            header4
                            italics
                            color of blue
                two column distributed
                    DropshipName
                    DropshipContact
                three column distributed
                    DropshipAddress
                        form is PostalAddressShortNotRequired
                DropshipPhoneNumber
