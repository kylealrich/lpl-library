AssetBookContextForm is a Form
    title is "AssetBook"
    Layout
        three column distributed
            column1
                paragraph
                    FinanceEnterpriseGroup
                        display as text
                paragraph
                    Asset
                        display as text
                    Asset.Description
                        no label
                        display as text
                paragraph
                    Book
                        display as text
                    Book.Description
                        no label
                        display as text
            column2
                paragraph
                    Asset.Company
                        label is "AssetCompany"
                        display as text
                paragraph
                    TransientFromCurrency
                        label is "TransactionCurrency"
                        display as text
                visible when (Asset.LeasedAsset)
                    paragraph
                        Asset.AssetLease.LeaseCompany
                            label is "LeaseCompany"
                        Asset.AssetLease.LeaseCompany.Name
                            no label
                            display as text
            column3
                paragraph
                    Asset.TagNumber
                        label is "Tag"
                        display as text
                paragraph
                    Asset.DerivedStatus
                        label is "Status"
                        display as text
                visible when (Asset.LeasedAsset)
                    paragraph
                        Asset.AssetLease.Lease
                        Asset.AssetLease.Lease.Description
                            no label
                            display as text
                paragraph
                    visible when (PromptForClearingAmount)
                        TranClearingAccountAmount
                            label is "LeaseClearingAmount"
