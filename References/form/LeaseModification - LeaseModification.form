LeaseModification is a WizardForm
    use for action Unreleased.Create
    title is "LeaseModification"
    show panel navigation
        last panel navigation is LeaseLink
            next button title is "Finish"
    PartialTermination is a Panel
        valid when (LeaseHasTerminationOption)
        form is LeasePartialTerminationForm
    TerminationInformation is a Panel
        valid when (PartialTermination)
        panel text is "EnterTerminationInformation"
        form is LeaseTerminationWizardMain
        save on next
    Lease is a Panel
        valid when (not PartialTermination)
        panel text is "EnterLeaseModifications"
        form is LeaseModificationWizardMain
        save on next
    LeaseFundModification is a Panel
        valid when (LesaeHasFundSplit)
        list is LeaseFundsRel.LeaseFunds
    PaymentSchedule is a Panel
        panel text is "EnterPaymentScheduleModifications"
        acknowledge action is Unreleased.RecalculateAmortization
        acknowledge completed when (AmortizationRecalculated)
        list is LeasePaymentDetailByDueDateRel.ModificationPaymentSchedule
    AmortizationSchedule is a Panel
        panel text is "ReviewModifiedAmortizationSchedule"
        list is LeaseCurrencyPaymentPeriodBalanceRel.LeaseAmortization
    Summary is a Panel
        form is LeaseModificationWizardSummary
