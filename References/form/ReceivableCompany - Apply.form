Apply is a Form
    Layout
        four column distributed
            column1
                ApplicationReviewRequired
                    label is "ApplicationReviewRequired"
                        left of field
                ApplicationDiscountGraceDays
                    label is "DiscountGraceDays"
                        left of field
                AutomaticMemoApplication
                    label is "AutomaticCreditApply"
                        left of field
                DefaultApplicationDate
                    label is "ApplicationPostDate"
                ApplyCashAcrossReceivableCompanies
                    label is default
                        left of field
            column2
                ProrateGainLossToDistributions
                    label is default
                        left of field
                ApplicationDiscountTaxRecovery
                    label is "TaxRecovery_onDiscount"
                        left of field
                AllowZeroPaymentAdjustments
                    label is "AllowZeroPaymentAdjustments"
                        left of field
                AllocateTaxPointPayment
                    label is default
                        left of field
                SelectFundDistributionSet
                    label is "SpecifyDistributionMix"
                        left of field
            column3
                ApplyDisplayPastDueDiscount
                    label is "PastDueDiscountDisplay"
                        left of field
                PaymentOverApplication
                    label is "OverApplication_ofPayment"
                        left of field
                ThirdPartyPayer
                    label is "ThirdPartyPayer"
                        left of field
                IncludeBOETransInBalance
                    label is "OpenBalanceIncludeDrafts"
                        left of field
                AllowHistoricalApplicationReversal
                    label is default
                        left of field
            column4
                PreventWriteOffBeforeTransactionGLDate
                    label is default
                        left of field
                VendorCreateAndInterfaceToAP
                    label is "InterfaceToPayables"
                paragraph
                    VendorClass
                        label is "DefaultVendorClass"
                    VendorClass.Description
                        no label
                        display as text
                DetailPayablesInterface
                    label is "DetailPayablesInterface"
                        left of field
                RetainInvoiceToAP
                    label is "RetainInvoiceWhenInterfacingToPayablesInDetail"
                        left of field
        header2 of "MarkedAsPaid"
        paragraph
            MarkedAsPaidReceivableReason
                display as text
            MarkedAsPaidOffsetAccount
                label is "MarkedAsPaidOffsetAccount"
                    left of field
                display as text
                compact format
            blank line
        header2 of "OverApplicationOfInvoice"
        eight column distributed
            column1
                OverApplyInvoice
                    label is "OverApplyInvoice"
            column2
                visible when (OverApplyReasonCode not entered)
                    OverApplyReasonCode
                        label is "ReasonCode"
                visible when (OverApplyReasonCode entered)
                    OverApplyReasonCode
                        label is "ReasonCode"
                        display as text
            column3
                visible when (not OverApplyInvoice)
                    OverApplyReasonCodeDescription
                        label is "ReasonCodeDescription"
                        display as text
                visible when (OverApplyInvoice)
                    OverApplyReasonCodeDescription
                        label is "ReasonCodeDescription"
            column4
                visible when (OverApplyInvoiceCreditPrefix not entered)
                    OverApplyInvoiceCreditPrefix
                        label is "CreditMemoPrefix"
                visible when (OverApplyInvoiceCreditPrefix entered)
                    OverApplyInvoiceCreditPrefix
                        label is "CreditMemoPrefix"
                        display as text
            column5
                visible when (OverApplyCreditDebitPrefix not entered)
                    OverApplyCreditDebitPrefix
                        label is "DebitMemoPrefix"
                visible when (OverApplyCreditDebitPrefix entered)
                    OverApplyCreditDebitPrefix
                        label is "DebitMemoPrefix"
                        display as text
            column6
                DerivedLastOverApplyInvoiceCreditNumber
                    label is "LastCreditMemo"
                    display as text
                    display zero
            column7
                DerivedLastOverApplyCreditDebitNumber
                    label is "LastDebitMemo"
                    display as text
                    display zero
            column8
                button of "ChangeLastNumbers"
                    action is ChangeLastOverApplyNumbers
                    display as link
        visible when (IsReceivableCompany)
            header2 of "AutomaticCashApplicationAlgorithmParameters"
            paragraph
                AutoCashAlgorithmVariance
                    label is "Variance"
                AutoCashAlgorithmReasonCode
                    label is "ReasonCode"
                    select is ReceivableReasonCodeOSList
                AutoCashAlgorithmMaximunInvoices
                    label is "MaximumInvoices"
                AutoCashAlgorithmCombination
                    label is "Combination"
        header2 of "PaymentChargebacks"
        two column distributed
            column1
                paragraph
                    CompanyCustomerReceivableGlobalLedgerForChargeback
                        label is "UseCompanyCustomerReceivableGlobalLedgerForChargeback"
            column2
                paragraph
                    AllowManualChargebackInvoiceNumbering
                        label is "AllowManualChargebackInvoiceNumbering"
