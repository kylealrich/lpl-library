CostAdjustments is an ActionForm
    action is CostAdjustment
    Layout
        display as text
            two column distributed
                column1
                    Company.DerivedCompanyDisplay
                        no label
                    InventoryLocation.DerivedInventoryLocationIDName
                        no label
                    paragraph
                        InventoryTransaction
                        InventoryCostHistory.LineNumber
                            label is "Line"
                    Item.RepresentativeText
                column2
                    Company.GeneralLedgerCompany.Currency
                        label is "Currency"
                    InventoryCostHistory.TransactionSystemCode
                    InventoryTransaction.InventoryDocumentType
                    InventoryCostHistory.ComponentSequence
                        label is "ComponentSequenceNumber"
        header1 of "_"
        two column distributed
            column1
                ReceivedDate
                    label is "UpdateDate"
            column2
                paragraph
                    GeneralLedgerDate
                        label is "PostDate"
        display as text
            two column distributed
                column1
                    visible when (not HasSupplementalUOM)
                        paragraph
                            DerivedUOM
                                label is "UOM"
                    visible when (HasSupplementalUOM)
                        paragraph
                            DerivedUOM
                                label is "StockUOM"
                            DerivedSupplementalUOM
                    DerivedReceivedQuantityDisplay
                    DerivedUnusedQuantityDisplay
                    DerivedDisplayUnitCost
                        label is "CurrentUnitCost"
                column2
                    blank line
                    DerivedStandardCostDisplay
                    DerivedAverageCostDisplay
                    DerivedLastReceiptCostDisplay
        single column
            TransientNewUnitCost
            AdjustToZeroFlag
                label is "AdjustToZero"
            OffsetAccount
                compact format
            InventoryReasonCode
                label is "ReasonCode"
            LineComment
