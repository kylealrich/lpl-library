CreateRecurringInvoices is an ActionForm
    action is CreateRecurringInvoices
    title is "ProcessRecurringInvoices"
    Layout
        single column
            paragraph
                PrmCompany
                    label is "Company"
                PrmCompany.Name
                    no label
                    display as text
            text of "or"
            paragraph
                PrmCompanyGroup
                    label is "CompanyGroup"
                PrmCompanyGroup.Description
                    no label
                    display as text
            Frequency
                label is "Frequency"
                display as required
            CycleCode
                label is "CycleCode"
            paragraph
                AddSubtract
                    label is "Number_ofDays"
                BillDays
                    no label
            UpdateRecords
                label is "CreateReceivableInvoices"
                initial value is "Y"
            GenerateIDMDocuments
