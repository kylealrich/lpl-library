IntercompanyBillingDocumentLineContextForm is a Form
    title is "IntercompanyBillingDocumentLine"
    Layout
        four column distributed
            column1
                paragraph
                    IntercompanyBillingDocumentHeader
                        label is "Document"
                        display as text
                    LineType
                        label is "Type"
                        display as text
            column2
                paragraph
                    text of "Receivable_Company<IntercompanyBillingDocumentHeader.ReceivableEntity.Company>_<IntercompanyBillingDocumentHeader.ReceivableEntity.Company.Name>"
            column3
                paragraph
                    text of "Payable_Company<IntercompanyBillingDocumentHeader.PayableEntity.Company>_<IntercompanyBillingDocumentHeader.PayableEntity.Company.Name>"
        four column distributed
            ExtendedAmount
                display as text
            TaxAmount
                display as text
            visible when (HasWithholdingAmount)
                paragraph
                    WithholdingAmount
                        display as text
                    SecondaryWithholdingAmount
                        display as text
            paragraph
                DerivedTotalDue
                    label is "NetDue"
                    display as text
                IntercompanyBillingDocumentHeader.DocumentCurrency
                    no label
                    display as text
        four column distributed
            column1
                paragraph
                    DerivedTotalReceivablesDistributionAmount
                        label is "TotalRevenueDistributionAmount"
                        display as text
                    visible when (RevenueDistribsOutOfBalance)
                        RevenueDistribsOutOfBalanceAmount
                            label is "OutOfBalance"
                            display as tag
                                color of red
            column2
                paragraph
                    DerivedTotalPayablesDistributionAmount
                        label is "TotalExpenseDistributionAmount"
                        display as text
                    visible when (ExpenseDistribsOutOfBalance)
                        ExpenseDistribsOutOfBalanceAmount
                            label is "OutOfBalance"
                            display as tag
                                color of red
