ProductTransactionQuery is an ActionForm
    action is ProductTransactionQuery
    title is "QueryTransactionsForProductUsage"
    Layout
        paragraph
            NumberOfPriorMonthsToSearchTransactions
            visible when (QueryHasBeenRun)
                text of "PreviousTransactionDateRange"
                TransactionDateRange.Begin
                    label is "Beginning"
                    display as text
                TransactionDateRange.End
                    label is "End"
                    display as text
        single column
            visible when (not AnyTasksExist)
                ParmCreateTasks
                    label is "CreateTasks"
            visible when (ManualTasksExist)
                DeleteManualTasks
                    label is "DeleteManuallyCreatedTasks"
            visible when (ParmCreateTasks)
                IncludeWatchers
                    label is "AttachWatchersForOrganizationToRecallNoticeNotifications"
        single column
            PrmManufacturerInformation
                compact format
        paragraph
            text of "IfEntered,ManufacturerInformationWillBeUsedInCombinationWithManufacturerNumberToFindRequisitionLinesAndPurchaseOrderLines"
                italics
            text of "IfManufacturerCodeOnlyIsEnteredAllRecordsWithManufacturerCodeWillBeFoundRegardlessOfManufacturerDivision"
                italics
            text of "IfNotEntered,ManufacturerNumberOnlyWillBeUsed"
                italics
        visible when (ParmCreateTasks)
            header2 of "Defaults"
            paragraph
                Priority
                text of "NumberOfDaysFromCurrentDayTasksAreDue"
                    bold
                visible when (FDATypeOne)
                    TasksDueInDaysFromTodayClass1
                        no label
                visible when (not FDATypeOne)
                    TasksDueInDaysFromToday
                        no label
        header2 of "PerformProductTransactionQueryFor:"
        header3 of "Transactions"
        single column
            text of "TaskInstructionsForTransactionsAndInventorySelectionsAreDefinedOnProducts"
                italics
                color of blue
        paragraph
            TransactionQueryParameters.PerformRequisitionQuery
                label is "RequisitionLines"
            TransactionQueryParameters.PerformPurchaseOrderQuery
                label is "PurchaseOrderLines"
            TransactionQueryParameters.PerformIssueQuery
                label is "Issues"
            TransactionQueryParameters.PerformIntransitTransferQuery
                label is "IncompleteTransfers"
        header3 of "Inventory"
        paragraph
            TransactionQueryParameters.PerformInventoryQuery
                label is "Inventory"
            TransactionQueryParameters.PerformParLocationQuery
                label is "ParLocations"
        visible when (LotOrSerialExists)
            header3 of "DetailTransactions"
            paragraph
                TransactionQueryParameters.PerformLotNumberQuery
                    label is "LotNumbers"
                TransactionQueryParameters.PerformSerialNumberQuery
                    label is "SerialNumbers"
                text of "(includesIssues,Transfers,AndStockOnHand)"
                    italics
            header3 of "PatientProcedures"
            paragraph
                TransactionQueryParameters.PerformPatientProcedureQuery
                    label is "SerialAndLotNumbersOnPatientProcedures"
        header3 of "Documents"
        paragraph
            TransactionQueryParameters.PerformContractQuery
                label is "ContractLines"
            TransactionQueryParameters.PerformSourcingEventQuery
                label is "SourcingEventLines"
            TransactionQueryParameters.PerformProcurementTemplateQuery
                label is "ProcurementTemplateLines"
        blank line
        visible when (ParmCreateTasks)
            paragraph
                visible when (not SmartphoneDisplay)
                    NonLocationActivityUser
                        label is "AssignDocumentActivityTo"
                visible when (SmartphoneDisplay)
                    NonLocationActivityUser
                        label is "AssignDocumentActivityTo"
                        select is MobileRecallUsers
                NonLocationActivityUser.RecallUserName
                    no label
                    display as text
            paragraph
                NonLocationInstructions
                    label is "TaskInstructionsForContractLines,SourcingEventLines,AndProcurementTemplateLines(Documents)"
                text of "TaskInstructionsForOtherTransactionsAndInventorySelectionsAreDefinedOnProducts"
                    italics
                    color of blue
