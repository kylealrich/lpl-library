BatchTaskMap is a Form
    is primary
    title is "JobStreamFieldMap"
    Layout
        two column
            BatchTask
                label is "JobStream"
            visible when (BatchTask.WarnPrivateUsedInStream)
                text of "<BatchTask><BatchTask.PrivateStreamResidentWarningMessage>"
                    right of field
                    color of blue
                    align as label
            visible when (BatchTask.WarnPublicUsedInStream)
                text of "<BatchTask><BatchTask.PublicStreamResidentWarningMessage>"
                    right of field
                    color of orange
                    align as label
        blank line
        three column
            Sequence
                label is "TargetStepID"
            Sequence.ExecutionOrder
                label is "TargetStepExecutionSequence"
            Sequence.TaskStep
                label is "TargetJob"
        three column
            BatchTaskMapData.SourceStep
                label is "SourceStepID"
            BatchTaskMapData.SourceStep.ExecutionOrder
                label is "SourceStepExecutionSequence"
            BatchTaskMapData.SourceStep.TaskStep
                label is "SourceJob"
        blank line
        single column
            BatchTaskMapData.SourceField
                compact format
                select is BatchTaskFieldList
            TargetField
                compact format
                select is BatchTaskFieldList
