PurchaseOrderCommentActionForm is an ActionForm
    action is Create
    title is "PurchaseOrderComment"
    Layout
        display as text
            three column
                Company
                PurchaseOrder
        single column
            CommentTitle
                label is "Title"
        three column
            TransientPrintOnInternalDocuments
            TransientPrintOnReceivingDocument
            TransientPrintOnPurchaseOrder
            TransientPrintOnDeliveryTicket
            TransientPrintOnPurchaseOrderTrailer
            TransientInvoiceComments
            TransientDisplayOnlyOnInternalDocuments
            TransientDisplayOnly
            TransientNamedPlaceIncoterm
            TransientAssetComment
        paragraph
            visible when (TransientPrintOnPurchaseOrder)
                SupplierCanView
                visible when (PurchaseOrder.IssueMethod.Email)
                    SendToVendor
            visible when (not TransientPrintOnPurchaseOrder)
                visible when (TransientPrintOnPurchaseOrderTrailer)
                    SupplierCanView
                    visible when (PurchaseOrder.IssueMethod.Email)
                        SendToVendor
        single column
            Attachment.File
            CommentText
                label is "Text"
                use text area
