StudentActivityBankStatementContextForm is a Form
    title is "<mode>BankStatement"
    Layout
        four column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    StudentActivityBankAccount
                        label is "BankAccount"
                        select is StudentActivityBankAccountSelectList
                paragraph
                    StudentActivityBankStatement
                        label is "BankStatement"
                paragraph
                    StatementEndingBalance
            column2
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentActivityBankAccount.Description
                        no label
                paragraph
                    StatementDate
                paragraph
                    Status
                        display only
            column3
                paragraph
                    StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                        label is "Currency"
                        display as text
                paragraph
                    blank line
                paragraph
                    PostingPeriod
                        display only
            column4
                paragraph
                    visible when (StatementExists)
                        button of "PrintReconciliationReport"
                            link is PrintReconciliationReport
                paragraph
                    blank line
                paragraph
                    visible when (CanAddBankTransactions)
                        button of "AddBankTransaction"
                            action is Entered.AddBankTransaction
