ContactsOptions is a Form
    title is "Contacts"
    Layout
        three column distributed
            column1
                header2 of "Cardholder"
                ProcurementCardUser
                    label is "CardUserI\\D"
                    select is ActiveProcurementCardUsers
                visible when (ProcurementCardUser entered)
                    paragraph
                        ProcurementCardUser.Employee.FirstLastName
                            label is "Name"
                    paragraph
                        ProcurementCardUser.Employee.EmployeeWorkTelephone
                        ProcurementCardUser.Employee.EmployeeWorkEmailAddress
                            label is "E\\-mail"
                    paragraph
                        ProcurementCardUser.Note
                visible when (ProcurementCardUser not entered)
                    paragraph
                        Employee
                    paragraph
                        CardUserName
                            label is "Name"
                    paragraph
                        UserPhoneNumber
                            label is "PhoneNumber"
                        EmailAddress
                            label is "E\\-mail"
                    paragraph
                        Note
            column2
                header2 of "Proxy"
                ProcurementCardProxyUser
                    label is "ProxyUserI\\D"
                    select is ProcurementCardProxies
                visible when (ProcurementCardProxyUser entered)
                    ProcurementCardProxyUser.Employee.FirstLastName
                    paragraph
                        ProcurementCardProxyUser.Employee.EmployeeWorkTelephone
                        ProcurementCardProxyUser.Employee.EmployeeWorkEmailAddress
                            label is "E\\-mail"
                visible when (ProcurementCardProxyUser not entered)
                    ProxyName
                        label is "Name"
                    paragraph
                        ProxyPhoneNumber
                            label is "PhoneNumber"
                        ProxyEmailAddress
                            label is "E\\-mail"
            column3
                header2 of "Options"
                paragraph
                    CardType
                paragraph
                    TaxOption
                paragraph
                    MerchantGroup
                        select is ProgramMerchantGroups
                    MerchantGroup.Description
                        no label
                        display as text
                    IncludeExcludeMerchantGroup
                        label is "Type"
                paragraph
                    SingleTransactionLimit
