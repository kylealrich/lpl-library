UserProdForm is a Form
    is primary
    title is "DataAreaConfiguration"
    Layout
        paragraph
            UserProd
            Description
        four column
            Status
                raise red alert when (Status.Invalid)
            update stamp
                label is "LastUpdate"
                display as text
            update stamp.actor
                label is "LastChangedBy"
                display as text
            UserEditorType
                label is "LastEditedVia"
                display as text
        single column
            LPL
                use text area of 20 lines
            visible when (HasErrorText)
                ErrorText
                    use text area of 5 lines
