MatchInvoiceInformation is a CompositeForm
    title is "MatchInvoiceInformation"
    context form is MatchInvoiceDashboardContext
        background is theme color
    restrict action Released.ApplyACreditToThisInvoice
    restrict action Released.ApplyAnInvoiceToThisCredit
    restrict action CreateMatchReferenceInvoice
    restrict action PeriodClosePreprocessorToUpdatePostDate
    Actions
        action is Unreleased.Match
            action icon is validate
            hide when invalid
        action is Approved.Match
            action icon is validate
            hide when invalid
        action is OneSourceMatch
            action icon is validate
            hide when invalid
        action is VertexMatch
            action icon is validate
            hide when invalid
    Lists is a MultiListPanel
        title is "Details"
        list is MatchPurchaseOrderInvoicesRel.MatchAnalysisPurchaseOrderList
            visible when (HasMultipleMatchPurchaseOrders)
        list is PayablesInvoiceDetailRel.MatchAnalysisList
        list is PayablesInvoiceAddOnChargeRel.MatchAnalysisList
            visible when (AddOnChargeExists)
        list is GLCommitRel.DrillGLCommitList
            visible when (GLCommitRelExists)
        list is PayablesInvoiceChargebackRel.ChargebackMatchAnalysisList
            visible when (HasChargebacks)
        list is MatchTransPayablesInvoiceRel.MatchedInvoices
            visible when (HasMatchedInvoices)
    Messages is a Panel
        title is "Messages"
        visible when (HasInvoiceMessages)
        list is MatchInvoiceMessageRel.InvoiceMessageReview
    MatchInvoiceTotals is a Panel
        form is TotalsForm
    Errors is a DashBoardPanel
        title is "Warnings_andErrors"
        visible when (ShowErrorsPanel)
        ErrorsList is a Panel
            title is "_"
            visible when (ErrorsExists)
            double width
            list is PayablesInvoiceError set.XiPayablesInvoiceErrorList
        ErrorsForm is a Panel
            title is "_"
            visible when (ShowErrorsForm)
            form is XiErrorForm
