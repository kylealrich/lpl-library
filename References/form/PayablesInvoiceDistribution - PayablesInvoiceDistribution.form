PayablesInvoiceDistribution is a Form
    title is "InvoiceDistribution"
    Layout
        header2 of "InvoiceInformation"
        display as text
            three column distributed
                column1
                    PayablesInvoice.DerivedCompanyNameID
                        label is "Company"
                    PayablesInvoice.DerivedVendorNameID
                    paragraph
                        PayablesInvoice.Invoice
                        PayablesInvoiceDistribution
                            label is "DistributionSequence"
                column2
                    Status
                    PayablesInvoice.DistributionDate
                        label is "PostDate"
                    PayablesInvoice.VoucherNumberDisplay
                        label is "Voucher"
                column3
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    paragraph
                        PayablesInvoice.TaxAmount
                            label is "InvoiceTaxAmount"
                        visible when (PayablesInvoice.TaxIsOutOfBalance)
                            PayablesInvoice.TaxOutOfBalanceAmount
                                label is default
                                    bold
                                    color of red
                    paragraph
                        PayablesInvoice.TotalDistributionAmount.TransactionTotal
                            label is "TotalDistributions"
                        visible when (PayablesInvoice.MatchProcessType.Expense)
                            visible when (PayablesInvoice.DistributionsAreOutOfBalance)
                                PayablesInvoice.DistributionOutOfBalanceAmount
                                    label is "Out_ofBalanceAmount"
                                        bold
                                        color of red
                    button of "ViewImage"
                        visible when (PayablesInvoice.InvoiceImageEntered)
                        view PayablesInvoice.PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
        header2 of "DistributionInformation"
        three column distributed
            column1
            column2
                GLFinanceCodeBlock.AccountingUnit
                    label is "*AccountingUnit"
            column3
                paragraph
                    GLFinanceCodeBlock.GeneralLedgerChartAccount
                        label is "*Account"
                    GLFinanceCodeBlock.GeneralLedgerChartAccount.AccountDescription
                        no label
                        display as text
        three column distributed
            column1
                GLTransactionAmount
                    label is "Amount"
            column2
                UnitAmount
            column3
                PayablesInvoice.DerivedRemainingDistributionAmount
                    label is "RemainingAmountToBeDistributed"
                    display as text
        three column distributed
            column1
                Description
            column2
                DistributionReference
                    label is "Reference"
            column3
                AddOnCharge
                TransientAOCAmount
        header2 of "TaxInformation"
        paragraph
            TaxCode
                select is TaxCodeFilteredList
            TaxType
                label is "Type"
                display as text
            TaxableAmount
            TaxUsageCode
                label is "TaxUsage"
        header2 of "Currency"
        three column distributed
            column1
                DistributionAmount.FunctionalAmount.ToCurrency
                    label is "CompanyCurrency"
                    display as text
            column2
                DistributionAmount.FunctionalAmount.EnteredCurrencyRate
                    label is "CompanyCurrencyRate"
                    display as text
            column3
                visible when (false)
                    DistributionAmount.AssignToCurrency
                DistributionAmount.FunctionalAmount.EnteredCurrencyAmount
                    label is "CompanyCurrencyAmount"
                    display as text
