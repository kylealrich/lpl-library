AwardAllToNewPurchaseOrder is an ActionForm
    action is Submitted.AwardAllNewPO
    title is "AwardToNewPurchaseOrder"
    Layout
        display as text
            two column
                Company
                SourcingEvent.EventVersionString
                    label is "Event#"
            two column
                NotifiedSupplier.Supplier
                NotifiedSupplier.Supplier.SupplierName
            two column
                NotifiedSupplier.SupplierSourceId
                    label is "SupplierContact"
                NotifiedSupplier.SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContactName"
            single column
                first SourcingEventLineResponse set.SourcingEventLine.OutputType
        single column
            text of "<SelectedEventLinesMessage>"
                header3
                color of green
        single column
            ReasonCode
                label is "AwardReason"
                select is BuyerAwardReasonsSelect
            visible when (RequestToNegotiateTerms)
                TermsHaveBeenNegotiated
        two column
            DeliveryDateOverride
            visible when (not Company.PurchasingCompany.ManualPOCodeAllowed.No)
                POCode
                    label is "ManuallyEnterPOCode"
        single column
            visible when (SourcingEvent.AllowResponseInOtherCurrency)
                visible when (DifferentResponseCurrency)
                    visible when (not VendorHasInvoiceCurrency)
                        CurrencyCode
                            label is "PurchaseOrderCurrency"
                    visible when (VendorHasInvoiceCurrency)
                        CurrencyCode
                            label is "PurchaseOrderCurrency"
                            display as text
            visible when (not DifferentResponseCurrency)
                visible when (not SourcingEvent.AllowResponseInOtherCurrency)
                    CurrencyCode
                        label is "PurchaseOrderCurrency"
                        display as text
