MobileReceiptInspectionLineDetails is a CompositeForm
    title is "InspectionLineDetails"
    context form is MobilePOReceivingInspectionLineDetailListContext
    Actions
        action is save
            label is "_"
            hide when invalid
    Detail is a Panel
        form is MobileDetail
    Source is a Panel
        visible when (POLineSourceExists)
        list is POLineSourceRels.MobilePOReceiptLineSourceList
    CatchWeight is a Panel
        visible when (IsCatchWeightItem)
        form is CatchWeight
    VendorItem is a Panel
        form is MobileVendorItem
    Comments is a Panel
        title is "Comments<CommentCount>"
        list is POReceiptAdjustmentAndInspectionLineCommentRel.MobileReceiptInspectionLineCommentList
