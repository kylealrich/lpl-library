SupplierCommentForm is a Form
    is primary
    title is "Comment"
    Layout
        display as text
            paragraph
                SupplierGroup
                SupplierGroup.Description
                    no label
            paragraph
                Supplier
                Supplier.SupplierName
                    no label
        single column
            Title
            Comment
                use text area
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
