PayablesInvoiceHistoryForm is a Form
    is primary
    title is "ApprovalHistory"
    Layout
        header2 of "InvoiceInformation"
        display as text
            three column distributed
                column1
                    PayablesInvoice.DerivedCompanyNameID
                        label is "Company"
                    PayablesInvoice.DerivedVendorNameID
                    PayablesInvoice.Invoice
                column2
                    PayablesInvoice.Status
                    PayablesInvoice.InvoiceDate
                    PayablesInvoice.VoucherNumberDisplay
                column3
                    PayablesInvoice.InvoiceAmount.CurrencyAmount
                        label is "InvoiceAmount"
                    PayablesInvoice.DueDate
                    visible when (PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.ProcessingTeam
                    visible when (not PayablesInvoice.ProcessingTeamEntered)
                        PayablesInvoice.APClerk.PreferredSimplePresentationName
                            label is "Processor"
        header2 of "ApprovalHistoryInformation"
        visible when (ResourceEntered)
            visible when (FinanceResourceExists)
                paragraph
                    FinanceResourceRel.PreferredSimplePresentationName
                        label is "Resource"
                        display as text
                    button of "<FinanceResourceRel.EmailAddress>"
                        visible when (EmailAddressEntered)
                        link is "mailto:<FinanceResourceRel.EmailAddress>"
                        display as link
                    FinanceResourceRel.FullWorkPhone
                        no label
                        display as text
            visible when (not FinanceResourceExists)
                paragraph
                    Resource.PresentationNameSnapshot
                        label is "Resource"
                        display as text
                    button of "<Resource.EmployeeWorkEmailAddress>"
                        visible when (EmailAddressEntered)
                        link is "mailto:<Resource.EmployeeWorkEmailAddress>"
                        display as link
                    Resource.EmployeeWorkTelephone
                        no label
                        display as text
        visible when (not ResourceEntered)
            single column
                DerivedResourceTeamDisplay
                    label is "Team/Role"
                    display as text
        display as text
            single column
                UpdateDate
                Status
                ActionReason
                Comment
                    use text area of 4 lines
                Escalated
