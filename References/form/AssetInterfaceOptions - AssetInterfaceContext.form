AssetInterfaceContext is a Form
    title is "ProjectInterfaceControl"
    Layout
        visible when (AssetEntered)
            three column independent
                column1
                    Asset.Picture.File
                        no label
                        align as label
                        display as full image up to 4 lines
                            missing image is missingpicture96px
                column2
                    paragraph
                        Project
                        Project.Project.Description
                            no label
                            display as text
                    paragraph
                        visible when (UseOldCapitalization)
                            TransactionQualifier
                        visible when (UseUpgradedCapitalization)
                            CapitalTransactionQualifier
                    paragraph
                        Active
                column3
                    paragraph
                        Asset
                            display as text
                        AssetRel.Description
                            no label
                            display as text
                    paragraph
                        AssetRel.AssetLocation
                            label is "Location"
                            show up to 20 characters
                        AssetRel.AssetLocation.Description
                            no label
                            display as text
                            show up to 30 characters
                    paragraph
                        AssetRel.AssetDivision
                            label is "Division"
                            show up to 20 characters
                        AssetRel.AssetDivision.Description
                            no label
                            display as text
                            show up to 30 characters
                    paragraph
                        AssetRel.AssetCategory
                            label is "Category"
                        AssetRel.DerivedStatus
                            label is "AssetStatus"
        visible when (Repair)
            three column independent
                column1
                    RepairAsset.Picture.File
                        no label
                        align as label
                        display as full image up to 4 lines
                            missing image is missingpicture96px
                column2
                    paragraph
                        FinanceEnterpriseGroup
                    paragraph
                        Project
                        Project.Project.Description
                            no label
                            display as text
                    paragraph
                        visible when (UseOldCapitalization)
                            TransactionQualifier
                        visible when (UseUpgradedCapitalization)
                            CapitalTransactionQualifier
                    paragraph
                        Active
                column3
                    paragraph
                        RepairAsset
                            display as text
                        RepairAssetRel.Description
                            no label
                            display as text
                    paragraph
                        RepairAssetRel.AssetLocation
                            label is "Location"
                            show up to 20 characters
                        RepairAssetRel.AssetLocation.Description
                            no label
                            display as text
                            show up to 30 characters
                    paragraph
                        RepairAssetRel.AssetDivision
                            label is "Division"
                            show up to 20 characters
                        RepairAssetRel.AssetDivision.Description
                            no label
                            display as text
                            show up to 30 characters
                    paragraph
                        RepairAssetRel.AssetCategory
                            label is "Category"
                        RepairAssetRel.DerivedStatus
                            label is "AssetStatus"
        visible when (Adjustment)
            three column independent
                column1
                    AppendToAsset.Picture.File
                        no label
                        align as label
                        display as full image up to 4 lines
                            missing image is missingpicture96px
                column2
                    paragraph
                        FinanceEnterpriseGroup
                    paragraph
                        Project
                        Project.Project.Description
                            no label
                            display as text
                    paragraph
                        visible when (UseOldCapitalization)
                            TransactionQualifier
                        visible when (UseUpgradedCapitalization)
                            CapitalTransactionQualifier
                    paragraph
                        Active
                column3
                    paragraph
                        AppendToAsset
                            display as text
                        AppendToAssetRel.Description
                            no label
                            display as text
                    paragraph
                        AppendToAssetRel.AssetLocation
                            label is "Location"
                            show up to 20 characters
                        AppendToAssetRel.AssetLocation.Description
                            no label
                            display as text
                            show up to 20 characters
                    paragraph
                        AppendToAssetRel.AssetDivision
                            label is "Division"
                            show up to 20 characters
                        AppendToAssetRel.AssetDivision.Description
                            no label
                            display as text
                            show up to 20 characters
                    paragraph
                        AppendToAssetRel.DerivedStatus
                            label is "AssetStatus"
