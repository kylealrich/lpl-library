Payment is a Form
    Layout
        header2 of "Payment"
        three column distributed
            paragraph
                CheckNumber
                    label is "PaymentNumber"
            paragraph
                CashInAdvance.TransactionAmount
                    label is "DownPayment"
            paragraph
                LetterOfCredit
        header2 of "Tax"
        three column distributed
            paragraph
                TaxExemptCode
            paragraph
                TaxCode
                TaxCode.Description
                    no label
                    display as text
            paragraph
                TaxPointDate
                    label is "Date"
        three column distributed
            visible when (TaxEntityUsesSabrix)
                paragraph
                    PointOfTitleTransfer
            visible when (TaxOutputDueAccount)
                paragraph
                    EntityTaxCodeRel.TaxOutputDueAccount
                        label is "TaxAccount"
                        display only
                        compact format
            visible when (TaxOutputAccount)
                paragraph
                    EntityTaxCodeRel.TaxOutputAccount
                        label is "TaxAccount"
                        display only
                        compact format
        header2 of "Shipment"
        three column distributed
            column1
                CustomerOrder
                    label is "Order"
            column2
                WarehouseShipment
                    label is "Shipment"
            column3
                ShipTerm
        three column distributed
            paragraph
                FreightCode
                FreightCode.BillingFreightDescription
                    no label
                    display as text
            paragraph
                FreightCharge.TransactionAmount
                    label is "FreightCharge"
        header2 of "SalesData"
        three column distributed
            paragraph
                Territory
                Territory.Description
                    no label
                    display as text
            paragraph
                CommissionSplitPercentage
                    label is "Split"
            paragraph
                SalesRepresentative
                    label is "SalesRepresentative1"
                SalesRepresentative.Name
                    no label
                    display as text
            paragraph
                CommissionRate1
                    label is "Commission"
            paragraph
                SalesRepresentative2
                    label is "SalesRepresentative2"
                SalesRepresentative2.Name
                    no label
                    display as text
            paragraph
                CommissionRate2
                    label is "Commission"
        three column distributed
            column1
                header2 of "CustomerPO"
                paragraph
                    CustomerPurchaseOrder
            column2
                header2 of "Global"
                paragraph
                    GlobalDocumentType
