MContractLineDashboardContext is a Form
    title is "ContractLines"
    Layout
        display as text
            paragraph
                ContractGroup
                ContractGroup.ProcurementGroup.Description
                    no label
            paragraph
                Contract.Supplier
                    label is "Supplier"
                Contract.Supplier.SupplierName
                    no label
            two column distributed
                Contract
                ItemNumber
                Contract.Name
                ItemDescription
            single column
                visible when (Contract.WorkingContractUnique)
                    Contract.WorkingContractID
                visible when (ContractLineExists)
                    ContractLine
                        label is "Line"
                visible when (OtherErrorsExist)
                    ErrorMessage
                        no label
                        display as tag
                            color of red
