StudentAssignedActivityContextForm is a Form
    title is "<mode>ActivitySummary"
    Layout
        paragraph
            StudentActivityDistrict
                label is "SchoolDistrict"
            StudentActivityDistrict.Name
                no label
                display as text
            TransactionCurrencyCode
                label is "Currency"
                display as text
        paragraph
            StudentActivitySchool
                label is "School"
            StudentActivitySchool.SchoolName
                no label
                display as text
        paragraph
            StudentRecord
                label is "StudentID"
                select is StudentBySchoolList
            StudentLastName
                label is "LastName"
            StudentFirstName
                label is "FirstName"
        paragraph
            SchoolActivityAccount
                label is "Activity"
                compact format
                select is SchoolActivityAccountSelectList
            SchoolActivityAccount.Description
        blank line
        paragraph
            TotalFeeAmount
                display as text
            TotalReceipts
                display as text
