SourcingEventLineResponseAOCForm is a Form
    is primary
    title is "AddOnCharge"
    Layout
        three column
            column1
                Company
                    display as text
                NotifiedSupplier.SupplierGroup
                    display as text
                NotifiedSupplier.SupplierSourceId
                    label is "SupplierContact"
                    display as text
            column2
                SourcingEvent.EventVersionString
                    label is "Event#"
                    display as text
                NotifiedSupplier.Supplier
                    label is "Supplier"
                    display as text
                NotifiedSupplier.SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContactName"
                    display as text
            column3
                SourcingEventLine
                    label is "Line#"
                    display as text
                NotifiedSupplier.Supplier.SupplierName
                    label is "SupplierName"
                    display as text
                blank line
        paragraph
            SourcingEventLineResponse.Quantity
                label is "Quantity"
                display as text
            SourcingEventLine.UOM.UnitOfMeasure
                display as text
        blank line
        paragraph
            AOC
                label is "AOCCode"
                display as text
            AOC.Description
                no label
            AddOnChargeType
            visible when (RequiredAOC)
                text of "Required"
                    bold
        visible when (not SourcingEventLineAOCRel.AllowanceContract)
            single column
                AOCRate
                text of "OR"
                    bold
            paragraph
                AOCOption
                visible when (AOCOption.PerUnit)
                    AOCCost
                        label is "UnitCost"
                visible when (AOCOption.Total)
                    AOCCost
                        label is "TotalCost"
            single column
                text of "OR"
                    bold
            single column
                ZeroCost
        visible when (SourcingEventLineAOCRel.AllowanceContract)
            single column
                AOCRate
        single column
            TotalAOCCost
                display as text
