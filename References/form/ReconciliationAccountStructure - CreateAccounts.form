CreateAccounts is an ActionForm
    action is CreateAccounts
    title is "CreateAccounts"
    Layout
        paragraph
            PrmChartAccountRule
                label is "ChartAccountSubset"
            PrmChartAccountRule.Condition
                no label
                display as text
        two column
            column1
                paragraph
                    PrmReconcileFrequency
                        label is "ReconcileFrequency"
                    visible when (PrmReconcileFrequency.Quarterly)
                        PrmPeriodWithinQuarter
                            label is "PeriodWithinQuarter"
                PrmPriority
                    label is "Priority"
                PrmReconciliationAccountGroup
                    label is "ReportGroup"
                    select is ReconciliationAccountGroupNoChildren
                PrmFinanceTeam
                    label is "Team"
                PrmRequireSupportingDoco
                    label is "RequiresSupportingDocumentation"
                PrmRequiresApproval
                    label is "RequiresApproval"
            column2
                paragraph
                    PrmAccountType
                        label is "AccountType"
                    visible when (PrmAccountType.Cash)
                        PrmCashManagementAccount
                            label is "CashAccount"
                PrmRisk
                    label is "Risk"
                paragraph
                    PrmCloseTask
                        label is "CloseTask"
                        select is TaskSelect
                    PrmCloseTask.TaskName
                        no label
                        display as text
                paragraph
                    PrmFinanceTeamMember
                        label is "TeamMember"
                        compact format
                    PrmFinanceTeamMember.TeamMember.PreferredSimplePresentationName
                        no label
                        display as text
                paragraph
                    PrmReconciliationPolicy
                        label is "AutoReconciliationPolicy"
                    PrmReconciliationPolicy.Description
                        no label
                        display as text
                visible when (PrmRequiresApproval)
                    paragraph
                        PrmApprovalCode
                            label is "ApprovalCode"
                        PrmApprovalCode.Description
                            no label
                            display as text
