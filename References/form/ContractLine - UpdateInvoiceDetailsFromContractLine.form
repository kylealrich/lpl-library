UpdateInvoiceDetailsFromContractLine is a Form
    use for action Active.UpdateInvoiceDetailsFromContractLine
    Layout
        display as text
            paragraph
                Contract
                Contract.Name
                    label is "ContractName"
            paragraph
                ContractLine
                    label is "LineNumber"
            paragraph
                ItemDescription
                    label is "Description"
            blank line
        visible when (ServiceCode.Quantity)
            two column
                PrmQuantity
                    label is "Quantity"
                visible when (DisplayRemainingQuantity)
                    DerivedRemainingQuantityOrdered
                        label is "QuantityRemaining"
                        display as text
        two column
            PrmUnitCost
                label is "UnitCost"
            visible when (ServiceCode.Amount)
                DerivedRemainingAmountInUse
                    label is "AmountRemaining"
                    display as text
            visible when (ServiceCode.Quantity)
                BaseCost
                    display as text
