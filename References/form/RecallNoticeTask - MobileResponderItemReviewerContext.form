MobileResponderItemReviewerContext is a Form
    title is "ReviewItemProposal"
    restrict action MobileAskAQuestion
    Layout
        single column
            RecallNotice
                display as text
            RecallNotice.Name
                label is "Name"
                display as text
        two column distributed
            Priority
                display as text
            ProposedItem
                label is "Status"
                display as text
        two column distributed
            FormattedDueDate
                label is "DueDate"
                display as text
            MobileFormattedTrialEndDate
                label is "TrialEndDate"
                display as text
        single column
            RecallNotice.Description
                display as text
        paragraph
            visible when (HasAttachmentToDisplay)
                visible when (false)
                    first DisplayAttachmentOnTaskRel.Attachment.MimeType
                button of "<first DisplayAttachmentOnTaskRel.Attachment.Title>"
                    view first DisplayAttachmentOnTaskRel.Attachment.File
                    display as link
        visible when (RecallTaskInstruction entered)
            single column
                RecallTaskInstruction
                    label is "InstructionTitle"
                    display as text
                TaskInstructionDescription
                    label is "Instructions"
                    display as text
                    use text area of 3 lines
