MenuSecurityConsoleDetailForm is a Form
    title is "NavigationPolicy"
    Layout
        header2 of "_"
        two column distributed
            column1
                paragraph
                    MenuSecurity.WebApp
                        display as text
                        mouse over text is "TitleIs:_'<MenuSecurity.WebApp.Title>'"
                        raise red alert when (Status.Invalid)
                            mouse over text is "Invalid"
                        raise yellow alert when (Status.Inactive)
                            mouse over text is "Inactive"
                        raise green alert when (Status.Active)
                            mouse over text is "Active"
                    MenuSecurity.Role
                        display as text
                    visible when (BasedOnDelivered)
                        LastReviewed corporate date
                            display as text
                            raise red alert when (HasUnreviewedChanges)
                                mouse over text is "<LastDeliveredInfoMsg>"
                            raise green alert when (not HasUnreviewedChanges)
                                mouse over text is "AllDeliveredChangesReviewed"
            column2
                paragraph
                    button of "Configure"
                        action is Configure
                        right align
                        is primary
                    button of "Copy"
                        action is Copy
                        right align
                    button of "Activate"
                        visible when (not Status.Active)
                        action is Activate
                        right align
                    button of "Deactivate"
                        visible when (not Status.Inactive)
                        action is Deactivate
                        right align
                    button of "UpdateDelivered"
                        visible when (CanEditDelivered)
                        action is Update
                        right align
        four column distributed
            column1
                header4 of "Description"
                paragraph
                    visible when (Description entered)
                        Description
                            no label
                            display as text
                    visible when (Description not entered)
                        text of "Description_Not_Entered"
                    button of icon.edit
                        action is UpdateDescription
            column2
                header4 of "BasedOnDelivered"
                visible when (BasedOnDelivered)
                    BasedOnDeliveredPolicy.MenuSecurity.Role
                        no label
                        display as text
                        raise blue alert when (not Configured)
                            mouse over text is "NoDifferences"
                    visible when (Configured)
                        button of "Compare"
                            link is BasedOnDeliverComparison
                            display as link
                visible when (not BasedOnDelivered)
                    text of "NotBasedOnDelivered"
            column3
                header4 of "CopiedFrom"
                paragraph
                    visible when (Copied)
                        CopiedFrom.Role
                            no label
                            display as text
                            raise blue alert when (not CopiedFromDifferent)
                                mouse over text is "NoDifferences"
                        button of icon.edit
                            action is UpdateCopyFrom
                    visible when (not Copied)
                        visible when (not Delivered)
                            text of "NotCopied"
                            button of icon.edit
                                action is UpdateCopyFrom
                        visible when (Delivered)
                            text of "NotSupportedOnDeliveredPolicy"
                visible when (not BasedOnDelivered)
                    visible when (CopiedFromDifferent)
                        button of "Compare"
                            link is CopiedFromComparison
                            display as link
                visible when (Delivered)
                    visible when (Copied)
                        text of "NotSupportedOnDeliveredPolicy"
                            display as yellow alert
            column4
                header4 of "EnableAutoUpdate"
                visible when (BasedOnDelivered)
                    check control
                        checked state is AutoUpdateEnabled
                        check action is SetAutoUpdateOn
                        uncheck action is SetAutoUpdateOff
                        display as switch
                        mouse over text is "Auto_UpdateAutomaticallyUpdatesUnreviewedDeliveredPolicyChanges"
                visible when (not BasedOnDelivered)
                    text of "ThisPolicyIsNotBasedOnADeliveredPolicy"
        single column
            header3 of "InaccessibleItems"
            visible when (Configuration entered)
                ConfigurationSorted
                    no label
                    display as text
            visible when (Configuration not entered)
                text of "<NoRestrictedItems>"
