RequestUpdateItem is an ActionForm
    action is RequestUpdateItem
    title is "RequestUpdateItem"
    Layout
        visible when (actor.initiator)
            text of "This_request_will_be_routed_for_approval;_after_it_is_approved_this_record_will_be_updated"
                header4
                italics
                color of blue
        visible when (not actor.initiator)
            three column distributed
                RequestedBy
                    display only
                RequesterActor
                    label is "ID"
                    display only
                RequesterPhone
                    label is "PhoneNumber"
                    display only
                    compact format
            paragraph
                RequesterEmail
                    label is "Email"
                    display only
                button of "SendEmail"
                    link is "mailto:<RequesterEmail>"
        two column distributed
            RequestPriority
            NeededBy
        header4 of "ActionComment"
        paragraph
            action comment
                no label
                use text area of 3 lines
        header2 of "MainOptions"
        paragraph
            ItemGroup
            ItemGroup.Description
                no label
                display as text
        two column distributed
            Description
            Description2
        paragraph
            Description3
                label is "LongDescription"
                use text area of 3 lines
        two column distributed
            Reference1
            Reference2
        single column
            visible when (UseLinkedImage)
                ImageURL
                    display as image
            visible when (not UseLinkedImage)
                Picture.File
                    label is "Image"
                    display as full image up to 5 lines
                        missing image is missingpicture96px
        single column
            StockUOM
        paragraph
            Manufacturer
                compact format
            Manufacturer.Description
                no label
                display as text
        single column
            ManufacturerNumber
        single column
            GenericName
        single column
            ReplacementItem
        two column distributed
            SerialTracked
            LotTracked
        three column distributed
            MSDSRequired
            CertificationRequired
            Consignment
        two column distributed
            StockWeight
                label is "StockWeight"
            StockVolume
                label is "StockCubic"
        paragraph
            IssueAccount.GeneralLedgerChartAccount
                label is "IssueAccount"
        three column distributed
            AllowCustomerOrderReturns
            CustomerOrderReturnDate
                label is "ReturnDate"
            BrokenCaseCharge
        header2 of "Number_ofDecimals"
        three column distributed
            NumberOfDecimalsCost
                label is "Cost"
            NumberOfDecimalsPrice
                label is "Price"
            NumberOfDecimalsQuantity
                label is "Quantity"
        header2 of "Codes"
        two column distributed
            paragraph
                FreightClass
                    show up to 10 characters
                FreightClass.Description
                    no label
                    display as text
            paragraph
                ICNCode
                    show up to 10 characters
                ICNCode.Description
                    no label
                    display as text
        two column distributed
            paragraph
                HazardCode
                    show up to 15 characters
                HazardCode.Description
                    no label
                    display as text
            paragraph
                UNSPSCCode
                    compact format
                UNSPSCCode.LongDescription
                    no label
                    display as text
        paragraph
            LocalCode
        paragraph
            CommodityCode
            CommodityCode.CcDescription
                no label
                display as text
        header2 of "Classes"
        two column table
            column headers
                "Major"
                "Minor"
            row headers
                "Inventory"
                "Purchasing"
                "Sales"
                "PPE"
            column1
                paragraph
                    InventoryClass.MajorInventoryClass
                        no label
                        show up to 10 characters
                    InventoryClass.MajorInventoryClass.Description
                        no label
                        display as text
                paragraph
                    PurchasingClass.MajorPurchasingClass
                        no label
                        show up to 10 characters
                    PurchasingClass.MajorPurchasingClass.Description
                        no label
                        display as text
                paragraph
                    SalesClass.MajorSalesClass
                        no label
                        show up to 10 characters
                    SalesClass.MajorSalesClass.Description
                        no label
                        display as text
                paragraph
                    PPEClass.MajorPPEClass
                        no label
                        show up to 10 characters
                    PPEClass.MajorPPEClass.Description
                        no label
                        display as text
            column2
                paragraph
                    InventoryClass.MinorInventoryClass
                        no label
                        show up to 10 characters
                    InventoryClass.MinorInventoryClass.Description
                        no label
                        display as text
                paragraph
                    PurchasingClass.MinorPurchasingClass
                        no label
                        show up to 10 characters
                    PurchasingClass.MinorPurchasingClass.Description
                        no label
                        display as text
                paragraph
                    SalesClass.MinorSalesClass
                        no label
                        show up to 10 characters
                    SalesClass.MinorSalesClass.Description
                        no label
                        display as text
                paragraph
                    PPEClass.MinorPPEClass
                        no label
                        show up to 10 characters
                    PPEClass.MinorPPEClass.Description
                        no label
                        display as text
        three column distributed
            Sterile
            Reprocessed
            Pharmaceutical
        three column distributed
            SingleUse
            Dressing
            Reusable
        single column
            Analytics
        visible when (CanShowHealthcareInformation)
            header2 of "HealthcareInformation"
            three column distributed
                Implantable
                Drugs
                Instrument
            three column distributed
                Narcotic
                ContainsHumanTissue
        header2 of "TaxInformation"
        single column
            PurchaseTaxable
        two column distributed
            paragraph
                PurchaseTaxCode
                PurchaseTaxCode.Description
                    no label
                    display as text
            paragraph
                ProductTaxCategory
                ProductTaxCategory.Description
                    no label
                    display as text
