CodeBlockRelationDetails is a CompositeForm
    is primary
    title is "FinanceStructureRelation"
    context form is CodeBlockRelationContext
        background is theme color
    Actions
        action is GenerateValidationPairsUsingRules
        action is RemoveValidationPairsUsingRules
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    RelationRules is a Panel
        visible when (not IsSystemRelation)
        list is CodeBlockRelationRule set.CodeBlockRelationRules
    Details is a Panel
        list is CodeBlockRelationDetail set.CodeBlockRelationDetailInContextList
