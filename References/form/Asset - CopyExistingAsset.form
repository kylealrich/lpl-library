CopyExistingAsset is an ActionForm
    action is CopyExistingAsset
    Layout
        paragraph
            PrmAssetCompany
        paragraph
            PrmAssetDescription
        paragraph
            PrmTagNumber
        paragraph
            PrmCurrency
        paragraph
            PrmNumberOfCopies
        visible when (AseetGuidelineClassesExists)
            paragraph
                PrmAssetGuidelineClass
                    label is "GuidelineClass"
                    select is ActiveGuidelineClassesRel.AssetGuidelineClasses
                PrmAssetGuidelineClass.Description
                    no label
                    display as text
        two column distributed
            column1
                paragraph
                    AssetType
                        compact format
                paragraph
                    PrmAssetGroup
            column2
                paragraph
                    PrmAssetAccountGroup
                paragraph
                    PrmAssetAccountingUnitGroup
        two column distributed
            column1
                header3 of "AssetItem"
                paragraph
                    PrmCopyExistingItem
                visible when (PrmCopyExistingItem)
                    paragraph
                        PrmPurchaseDate
            column2
                header3 of "AssetBook"
                paragraph
                    PrmCopyExistingBook
                visible when (PrmCopyExistingBook)
                    paragraph
                        PrmComputeOption
