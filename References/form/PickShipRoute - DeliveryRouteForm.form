DeliveryRouteForm is a Form
    use for action CreateShipmentRoute
    title is "ShipmentRoute"
    Layout
        visible when (RecordExists)
            three column distributed
                display as text
                    column1
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                    column2
                        paragraph
                            InventoryLocation.DerivedInventoryLocationIDName
                                label is "InventoryLocation"
                    column3
                        paragraph
                            PickShipRoute.DayOfWeek
            three column distributed
                display as text
                    column1
                        paragraph
                            PickShipRoute.Route
                    column2
                        paragraph
                            PickShipRoute.Stop
                column3
                    visible when (not StartedOrInTransitVehicleTripExists)
                        paragraph
                            RequestingLocation
                                select is AllActiveRequestingLocations
                    visible when (StartedOrInTransitVehicleTripExists)
                        display as text
                            paragraph
                                RequestingLocation
        visible when (not RecordExists)
            three column distributed
                column1
                    paragraph
                        Company
                            when value changed
                                refresh RequestingLocation
                        Company.Name
                            no label
                            display as text
                column2
                    paragraph
                        InventoryLocation
                            label is "Location"
                            show up to 16 characters
                        InventoryLocation.Name
                            no label
                            display as text
                column3
                    paragraph
                        PickShipRoute.DayOfWeek
                            display as required
            three column distributed
                column1
                    paragraph
                        PickShipRoute.Route
                            display as required
                column2
                    paragraph
                        PickShipRoute.Stop
                            display as required
                column3
                    paragraph
                        RequestingLocation
                            select is AllActiveRequestingLocations
                            display as required
        header3 of "Address_Information"
        display as text
            two column distributed
                column1
                    paragraph
                        RequestingLocation.PostalAddress.Country
                            label is "Country/Jurisdiction"
                    paragraph
                        RequestingLocation.PostalAddress.DeliveryAddress.AddressLine1
                            label is "StreetAddress"
                    paragraph
                        RequestingLocation.PostalAddress.DeliveryAddress.AddressLine2
                            no label
                    paragraph
                        RequestingLocation.PostalAddress.DeliveryAddress.AddressLine3
                            no label
                    paragraph
                        RequestingLocation.PostalAddress.DeliveryAddress.AddressLine4
                    paragraph
                        RequestingLocation.PostalAddress.Municipality
                            label is "City"
                    paragraph
                        RequestingLocation.PostalAddress.StateProvince
                            label is "State/Province"
                    paragraph
                        RequestingLocation.PostalAddress.PostalCode
                            label is "ZipCode"
                    paragraph
                        RequestingLocation.PostalAddress.County
                            label is "County/District"
                    paragraph
                        RequestingLocation.PostalAddress.Region
                            label is "Region"
                column2
                    paragraph
                        RequestingLocation.PostalAddress.Type
                            label is "Type"
                    paragraph
                        RequestingLocation.PostalAddress.GeoLatitude
                            label is "Latitude"
                    paragraph
                        RequestingLocation.PostalAddress.GeoLongitude
                            label is "Longitude"
                    paragraph
                        RequestingLocation.PostalAddress.GeoAltitude
                            label is "Altitude"
