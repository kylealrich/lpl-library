ChangeOrderMain is a Form
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        single column
            ChangeOrderTitle
            ChangeOrderNumber
            ChangeOrderDate
            ChangeOrderDescription
        visible when (ContractHasSubcontractor)
            paragraph
                ChangeOrderSubcontractor
                ChangeOrderSubcontractor.SubName
                    no label
                    display as text
        visible when (ShowCommitAllowance)
            single column
                ChangeOrderCommitAllowance
        three column distributed
            column1
                Contract.DerivedContractEffectiveDate
                    label is "CurrentEffectiveDate"
                    display as text
                Contract.DerivedContractExpirationDate
                    label is "CurrentExpirationDate"
                    display as text
                Contract.ContractReviewDate
                    label is "CurrentReviewDate"
                    display as text
                paragraph
                    ChangeOrderApprover
                        select is ChangeOrderApproverSelect
                    ChangeOrderApprover.Employee.FirstLastName
                        no label
                        display as text
            column2
                ChangeOrderEffectiveDate
                ChangeOrderExpirationDate
                ChangeOrderReviewDate
            column3
                ChangeOrderLineUpdateOption
        paragraph
            visible when (HasDocument)
                ChangeOrderDocument.Title
            ChangeOrderDocument.File
                label is "Document"
