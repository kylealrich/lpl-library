Main is a Form
    Layout
        visible when (not RecordExists)
            two column
                column1
                    paragraph
                        CustomerGroup
                        CustomerGroup.Name
                            no label
                            display as text
                column2
                    paragraph
                        CustomerGroup.Currency
                            display as text
                        CustomerCompanyGroup
                        button of "CustomerCompanyGroup"
                            link is CustomerCompanyGroupNav
                            display as link
        two column distributed
            column1
                paragraph
                    visible when (RecordExists)
                        Customer
                            display as text
                    Name
                LegalName
            column2
                CustomerReference
                SearchName
        header2 of "ContactInformation"
        two column distributed
            column1
                paragraph
                    ContactTitle
                    Contact
                paragraph
                    PhoneNumber
                    visible when (PhoneNumber entered)
                        button of icon.phone
                            link is "tel:<PhoneNumber>"
                paragraph
                    MobileNumber.MobilePhoneNumber.InternationalPrefix
                        label is "MobileCountry/\\JurisdictionCode"
                    MobileNumber.MobilePhoneNumber.SubscriberNumber
                        label is "MobileNumber"
                    MobileNumber.SmsEnabled
                        label is "SmsEnabled"
                paragraph
                    FaxNumber.InternationalPrefix
                        label is "FaxCountry/\\JurisdictionCode"
                    FaxNumber.SubscriberNumber
                        label is "FaxNumber"
                    FaxNumber.Extension
                        label is "Extension"
                paragraph
                    EmailAddress
                    visible when (EmailEntered)
                        button of icon.mail
                            link is "mailto:<EmailAddress>"
                paragraph
                    URLAddress
                    visible when (URLEntered)
                        button of icon.url
                            link is "<URLAddress>"
            column2
                TwitterID
                SocialNetworkID2
                SocialNetworkID3
                SocialNetworkID4
                SocialNetworkID5
        header2 of "TaxInformation"
        two column distributed
            column1
                paragraph
                    TaxIdentificationType
                    TaxIdentificationType.Description
                        no label
                        display as text
                TaxID
            column2
                ElectronicGovernmentID
                CheckDigitType
        three column
            paragraph
                VATRegistrationNumber
                    label is "DefaultVATRegistrationNumber"
            paragraph
                VATRegistrationCountry
                    label is "DefaultVATRegistrationCountry/\\Jurisdiction"
            paragraph
                visible when (CustomerGroup.CustomerBusinessGroup.UseHSNSACCode)
                    TaxRegistrationType
        header2 of "CreditInformation"
        two column distributed
            column1
                paragraph
                    CreditAgencyCode
                    CreditAgencyDate
                    CreditAgencyNumber
                paragraph
                    ReceivableHoldCode
                        label is "HoldCode"
                    ReceivableHoldCode.Description
                        no label
                        display as text
            column2
                paragraph
                    CreditLimit
                    TotalCurrentBalance
                        display as text
                paragraph
                    OrderLimit
                    OpenOrderAmount
                        label is "OpenOrders"
                        display as text
                paragraph
                    visible when (BillOfExchangeProcessing)
                        CurrentBillOfExchangeBalance
                            display as text
        header2 of "VendorInformation"
        paragraph
            VendorGroupAndVendor.VendorGroup
            VendorGroupAndVendor.VendorGroup.Description
                no label
                display as text
        paragraph
            VendorGroupAndVendor.Vendor
            VendorGroupAndVendor.Vendor.VendorName
                no label
                display as text
            visible when (VendorGroupAndVendor.Vendor entered)
                button of icon.link
                    form invoke is VendorForm
        paragraph
            visible when (HasCompanyCustomerAndNoVendorBalance)
                button of "NetBalance"
                    link is NetBalances
                    display as link
            visible when (not HasCompanyCustomerAndNoVendorBalance)
                button of "NetBalance"
                    link is NetBalancesFromVendor
                    display as link
