SchedulePeriodClose is a Form
    is primary
    Layout
        single column
            ActionOption
            GeneralLedgerCloseConfiguration
                label is "CloseConfiguration"
            YearPeriodOption
            visible when (YearPeriodOption.Year)
                FiscalYear
                    label is "Year"
                    select is GeneralLedgerCloseYearList
            visible when (YearPeriodOption.SinglePeriod)
                CurrentPeriod
                    label is "period"
                    compact format
                    select is PeriodList
            visible when (YearPeriodOption.PeriodRange)
                PeriodRange
        single column
            EntityOption
            visible when (EntityOption.Single)
                AccountingEntity
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
            visible when (EntityOption.Group)
                AccountingEntityGroup
                    label is "<FinanceEnterpriseGroup.AccountingEntityLabel>Group"
            LedgerOption
            visible when (LedgerOption.Single)
                Ledger
                    select is WithoutCloseLedgerList
            visible when (LedgerOption.Group)
                LedgerGroup
