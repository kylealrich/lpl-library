ItemGroupMain is a Form
    Layout
        two column distributed
            column1
                paragraph
                    NumericItemNumber
                paragraph
                    AutomaticItemNumbering
                paragraph
                    LastItem
                paragraph
                    WeightUOM
                paragraph
                    VolumeUOM
                paragraph
                    AllowUOMChangesWithOpenTransactions
                paragraph
                    AllowMultipleGTINs
                paragraph
                    RequireManufacturerOnNewInterfaceItems
                        label is "WhenCreatingItemsUsingItemInformationWorksheetRequireManufacturerInformation"
            column2
                paragraph
                    HideHealthcareInformation
                paragraph
                    RecipeManagementInUse
                        label is "KitchenManagement"
                visible when (ItemGroup.FinanceEnterpriseGroup.FSMPreferenceCardEnabled)
                    paragraph
                        PreferenceCardsInUse
                visible when (PreferenceCardsInUse)
                    paragraph
                        ProcedureDemandForecastOnly
                paragraph
                    SetForClinicalUseToTrue
                paragraph
                    NoDirectUpdateToManufacturerInformation
                visible when (NoDirectUpdateToManufacturerInformation)
                    paragraph
                        text of "OnlyUpdateManufacturerInformationThrough_Item_SyncOr_Attribute_Update"
                            italics
                paragraph
                    DefaultManufacturerNumberOnGTIN
                paragraph
                    ContractGroupRel.AutoAddUNSPSCCode
                        display as text
                    text of "UNSPSCCodesWillBeAutoCreatedFromItemWorksheet,AttributeUpdate,AndContractInterface"
                        italics
        two column distributed
            column1
                header2 of "Substitutes"
                paragraph
                    AutomaticItemSubstitute
                    visible when (AutomaticItemSubstitute)
                        paragraph
                            IgnoreSubstituteItemsInReplenishment
                        paragraph
                            AllowSubstitutesOnWarehouseLocationRule
                        paragraph
                            AllocatePriorToSubstitution
            column2
                header2 of "ItemImageAttachments"
                paragraph
                    ItemImageMaximumSize
                        label is "MaximumSize"
                    ItemImageUOM
                        label is "UOM"
                    ItemImageMaximumSizeBytes
                        label is "Bytes"
                        display as text
                visible when (ScannerServiceEnabled)
                    paragraph
                        ImageSource
                            label is "DefaultItemImageSource"
        two column distributed
            column1
                header2 of "Defaults"
                paragraph
                    DefaultNumberOfDecimalsCost
                        label is "NumberOfDecimalsForCost"
                    DefaultNumberOfDecimalsPrice
                        label is "NumberOfDecimalsForPrice"
            column2
                header2 of "ItemMasterSync"
                paragraph
                    ItemSyncOption
                    DoNotUpdateInactiveVendorItem
        two column distributed
            column1
                header2 of "RequestersAccountingRestrictions"
                paragraph
                    StructureRow
                        label is "RequestersAccountingRestrictionsBy"
                        select is StructureRowSelectList
                    DerivedRestrictedByLabel
                        no label
                        display as text
                RequesterValidationOption
                    label is "ValidationOption"
                    show up to 30 characters
                visible when (AllocationPriorityLevelExistsAndValidForDefault)
                    button of "<RSSSetAllocationPriorityLevel>"
                        action is SetDefaultAllocationPriorityLevel
