ContractAttachmentForm is a Form
    is primary
    title is "ContractAttachment"
    Layout
        display as text
            four column distributed
                column1
                    Contract.RepresentativeText
                column2
                    Contract.Supplier.RepresentativeText
                        label is "Supplier"
                column3
                    Contract.WorkingContractID
                    paragraph
                        Contract.Status
                            display as tag
                                color of turquoise when (Contract.ActivationInProgress)
                                color of brown when (Contract.ContractStatus.Draft)
                                color of green when (Contract.ContractStatus.Released)
                                color of orange when (Contract.ContractStatus.Negotiation)
                                color of yellow when (Contract.ContractStatus.FinalApproval)
                                color of blue when (Contract.ContractStatus.ReadyToActivate)
                                color of green when (Contract.ContractStatus.Active)
                                color of gray when (Contract.ContractStatus.Inactive)
                                color of purple when (Contract.ContractStatus.Addendum)
                                color of purple when (Contract.ContractStatus.Amendment)
                                color of black when (Contract.ContractStatus.Closed)
                        visible when (Contract.OnHold)
                            Contract.OnHoldMessage
                                no label
                                display as tag
                                    color of red
                column4
                    Source
                        display as tag
                            color of blue when (Source.Manual)
                            color of green when (Source.Event)
                            color of brown when (Source.EventResponse)
                            color of turquoise when (Source.EventQuestionResponse)
                            color of purple when (Source.SupplierProposal)
                            color of orange when (Source.RequesterProposal)
        header2 of "_"
        single column
            paragraph
                visible when (AttachmentExists)
                    Sequence
                        label is "AttachmentNumber"
                        display as text
                Name
            Description
                use text area of 5 lines
        paragraph
            visible when (AttachmentExists)
                Attachment.Title
            Attachment.File
                label is "Attachment"
        three column
            visible when (AttachmentExists)
                EmailAttachment
                    label is "IncludeAttachmentInEmail"
                SupplierCanView
                visible when (EligibleForSourcing)
                    SSAttachment
                        label is "SendAttachmentToSourcing"
