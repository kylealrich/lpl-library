MobileContractContext is a Form
    title is "ContractContext"
    restrict action CreateIDMXML
    restrict action DeleteIDMXML
    Layout
        two column
            column1 of 50%
                Supplier.SupplierName
                    label is "Supplier"
                    display as text
            column2 of 50%
                SupplierSourceId.MainContact.FirstAndLastName
                    label is "SupplierContact"
                    display as text
        two column
            column1 of 50%
                Status
                    display as tag
                        color of turquoise when (ActivationInProgress)
                        color of brown when (ContractStatus.Draft)
                        color of green when (ContractStatus.Released)
                        color of orange when (ContractStatus.Negotiation)
                        color of yellow when (ContractStatus.FinalApproval)
                        color of blue when (ContractStatus.ReadyToActivate)
                        color of green when (ContractStatus.Active)
                        color of gray when (ContractStatus.Inactive)
                        color of purple when (ContractStatus.Addendum)
                        color of purple when (ContractStatus.Amendment)
                        color of black when (ContractStatus.Closed)
            column2 of 50%
                paragraph
                    button of "Preview"
                        link is ContractPreviewNoLines
                        display as link
                    button of icon.pdf-file
                        link is ContractPreviewNoLines
        single column
            visible when (OnHold)
                OnHoldMessage
                    no label
                    display as tag
                        color of red
            visible when (BudgetEditInProgress)
                DerivedBudgetEditsInProgressMessage
                    no label
                    display as tag
                        color of red
            visible when (BudgetEditFailure)
                visible when (not ActivationInProgress)
                    DerivedBudgetEditsFailureMessage
                        no label
                        display as tag
                            color of red
            visible when (ActivationInProgress)
                DerivedActivationInProgressMessage
                    no label
                    display as tag
                        color of red
            visible when (HasNonFinishedTriggers)
                DerivedReleaseMembersInProgressMessage
                    no label
                    display as tag
                        color of red
