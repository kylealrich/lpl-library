InventoryForecastsForm is a Form
    is primary
    title is "InventoryForecast"
    Layout
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            InventoryLocation
                label is "Location"
            InventoryLocation.Name
                no label
                display as text
        paragraph
            Item
            Item.Description
                no label
                display as text
        paragraph
            InventoryForecast.ForecastYear
                label is "Year"
            InventoryForecast.ForecastNumber
                label is "Forecast"
            InventoryForecast.Quarter
                label is "Quarter"
        blank line
        paragraph
            ActionCode
            visible when (ActionCode.Duplicate)
                SpreadQuantity
                    label is "Units"
                SpreadAmount
                    label is "Amount"
            visible when (ActionCode.Spread)
                SpreadQuantity
                    label is "Units"
                SpreadAmount
                    label is "Amount"
        blank line
        three column table
            column headers
