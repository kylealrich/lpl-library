CustomerRecurringInvoiceLineItemForm is a Form
    title is "CustomerRecurringInvoiceLineItem"
    Layout
        three column distributed
            column1
                paragraph
                    Description
            column2
                paragraph
                    ItemReference
            column3
                paragraph
                    GlobalLineType
        three column distributed
            column1
                paragraph
                    FinanceDimension2
                        label is "<Company.CustomerBusinessGroup.FinanceEnterpriseGroup.FinanceDimension2Label>"
            column2
                paragraph
                    ProjectContract
                        label is "<Company.CustomerBusinessGroup.FinanceEnterpriseGroup.ProjectLabel>Contract"
            column3
                paragraph
                    Project
                        label is "<Company.CustomerBusinessGroup.FinanceEnterpriseGroup.ProjectLabel>"
        three column distributed
            column1
                paragraph
                    TransactionAmount
            column2
            column3
        visible when (Company.DetailedInvoiceAccrualDistributions)
            header2 of "DetailFinanceStructure"
            InvoiceFinanceCodeBlock
                label is "InvoiceAccrualAccount"
                compact format
