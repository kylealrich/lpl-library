ScheduleAllocationRun is a Form
    is primary
    Layout
        single column
            PrmAllocationControl
                label is "AllocationControl"
                select is AllocationControlOnlyList
            PrmAllocation
                label is "Allocation"
            PrmGroup
                label is "Group"
            PrmDate
                label is "AllocationPostDate"
            PrmFromStep
                label is "FromStep"
            PrmToStep
                label is "ToStep"
            PrmJournalize
                label is "JournalizeIfComplete"
            PrmGenerateListingData
                label is "GenerateReports"
            visible when (PrmGenerateListingData)
                PrmGenerateSourceValue
                    label is "IncludeSourceDetails"
                    indent
