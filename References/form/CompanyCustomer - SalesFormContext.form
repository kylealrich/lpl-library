SalesFormContext is a Form
    Layout
        two column
            column1
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Customer
                    Customer.Name
                        no label
                        display as text
            column2
                paragraph
                    DerivedEstimatesTotalCharges
                        label is "OutstandingEstimatesAndCallInEstimates"
                        display as text
                    Currency
                        no label
                        display as text
                paragraph
                    CurrentBalance
                        label is "CurrentAccountReceivablesBalance"
                        display as text
                paragraph
                    DerivedOutstandingFranchiseBalance
                        label is "OutstandingBalance"
                        display as text
