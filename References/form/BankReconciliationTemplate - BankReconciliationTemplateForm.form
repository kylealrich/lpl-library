BankReconciliationTemplateForm is a Form
    is primary
    title is "BankReconciliationTemplate"
    Layout
        two column distributed
            Description
            Active
        header3 of "SelectionCriteria"
        single column
            CashManagementGroup
            CashTransactionCategory
            GeneralLedgerSystemCode
                label is "System"
            CashManagementAccount
                label is "Account"
            BankTransactionCode
                label is "BankTransactionCode"
        header3 of "SelectionRules"
        two column distributed
            column1
                LineMatchField
                visible when (DisplayVariableSourceOnStatement)
                    TransactionNumberSource
            column2
                RemoveLeadingZeros
                visible when (DisplayRemoveAlphaCharacters)
                    RemoveAlphaCharacters
