RecurringInvoiceResultContext is a Form
    Layout
        display as text
            four column distributed
                column1
                    visible when (PrmCompany entered)
                        paragraph
                            PrmCompany.RepresentativeText
                            PrmCompany.Currency
                                no label
                    visible when (PrmCompanyGroup entered)
                        PrmCompanyGroup.RepresentativeText
                    Frequency
                        label is "Frequency"
                column2
                    UpdateRecords
                        label is "CreateReceivableInvoices"
                    CycleCode
                        label is "Cycle"
                column3
                    Status
                        display as tag
                            color of gray when (Status.InProcess)
                            color of green when (Status.Complete)
                            color of red when (Status.Incomplete)
                    paragraph
                        AddSubtract
                            label is "Number_ofDays"
                        BillDays
                            no label
                column4
                    button of "ViewOriginalResult" with icon.pdf-file
                        visible when (ReversalResult entered)
                        link is ViewReversalResult
            visible when (not RecordsExist)
                text of "NoRecordsFoundToProcess"
                    bold
