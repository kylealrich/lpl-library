CreateNewRequestAction is an ActionForm
    action is CreateNewRequestAction
        on completion navigate to ConfigConsoleNav
    Layout
        section of General
            single column
                BusinessClassParam
                ActionNameParam
                visible when (BusinessClassParam.HasStates)
                    StateParam
                        select is BusinessStateRelList
            paragraph
                ActionTypeParam
                valid when (ActionTypeParam.Create)
                    InvokeCreateActionParam
                        select is RequestActionInvokeCreateSelect
            single column
                IncludeAllFieldsParam
            header3 of "AdjustDefaultLabel"
            single column
                text of "Action_LabelWillDefaultFromThe_ActionNameAbove.YouCanOverride."
                    bold
                    align as label
            paragraph
                HasExplicitLabelParam
                    label is "OverrideDefaultActionLabel"
                visible when (HasExplicitLabelParam)
                    ExplicitLabelParam
                        no label
        section of Validity
            paragraph
                ValidWhenParam
                    select is ConditionBusinessFieldList
                ValidWhenNegatedParam
                    label is "Negate"
        section of Required
            paragraph
                valid when (BusinessClassParam.ImplementsEffectiveDated)
                    EffectiveDateRequiredParam
                valid when (BusinessClassParam.ImplementsAuditing)
                    ReasonCodeRequiredParam
                    ActionCommentRequiredParam
            single column
                SubjectParam
        section of Workflow
            single column
                ProcessFlowParam
                WebAppParam
