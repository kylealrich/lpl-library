StatementPrint is an ActionForm
    action is ARStatementPrint
    Layout
        paragraph
            Company
                when value changed
                    IsoLocale =  Company.LanguageCode
            Company.Name
                no label
                display as text
        single column
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
                when value changed
                    IsoLocale =  CompanyGroup.first GeneralLedgerCompanyGroupMembersRel.Company.ReceivableCompany.LanguageCode
            CompanyGroup.Description
                no label
                display as text
        two column distributed
            column1
                AsOfDate
            column2
                FutureApps
                    label is "QualifyFutureApplications"
        paragraph
            FileName
        header2 of "Main"
        header4 of "OpenItemStatementCycleCodes"
        three column distributed
            OpenItemStatementCycle.OpenItemStatementCycle[1]
                no label
                select is StatementCycle
            OpenItemStatementCycle.OpenItemStatementCycle[2]
                no label
                select is StatementCycle
            OpenItemStatementCycle.OpenItemStatementCycle[3]
                no label
                select is StatementCycle
        three column distributed
            OpenItemStatementCycle.OpenItemStatementCycle[4]
                no label
                select is StatementCycle
            OpenItemStatementCycle.OpenItemStatementCycle[5]
                no label
                select is StatementCycle
            OpenItemStatementCycle.OpenItemStatementCycle[6]
                no label
                select is StatementCycle
        three column distributed
            OpenItemStatementCycle.OpenItemStatementCycle[7]
                no label
                select is StatementCycle
            OpenItemStatementCycle.OpenItemStatementCycle[8]
                no label
                select is StatementCycle
            OpenItemStatementCycle.OpenItemStatementCycle[9]
                no label
                select is StatementCycle
        single column
            OpenItemStatementCycle.OpenItemStatementCycle[10]
                no label
                select is StatementCycle
        header4 of "BalanceForwardStatementCycleCodes"
        three column distributed
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[1]
                no label
                select is StatementCycle
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[2]
                no label
                select is StatementCycle
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[3]
                no label
                select is StatementCycle
        three column distributed
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[4]
                no label
                select is StatementCycle
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[5]
                no label
                select is StatementCycle
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[6]
                no label
                select is StatementCycle
        three column distributed
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[7]
                no label
                select is StatementCycle
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[8]
                no label
                select is StatementCycle
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[9]
                no label
                select is StatementCycle
        single column
            BalanceForwardStatementCycle.BalanceForwardStatementCycle[10]
                no label
                select is StatementCycle
        header3 of "CustomerSelect"
        paragraph
            MajorClass
                label is "MajorClass"
                select is MajorClass
            MajorClass.Description
                no label
                display as text
        paragraph
            MinorClass
                label is "MinorClass"
                select is MinorClass
            MinorClass.Description
                no label
                display as text
        single column
            text of "Or"
                bold
        paragraph
            Customer
            Customer.Name
                no label
                display as text
        single column
            text of "Or"
                bold
        paragraph
            AuditFl
                label is "AuditSelect"
        blank line
        header3 of "TransactionSelect"
        paragraph
            ProcessLevel
            ProcessLevel.Name
                no label
                display as text
        single column
            NaSelect
                label is "NationalAccountSelect"
        header2 of "Format"
        single column
            ListApplFl
                label is "ListApplications"
        paragraph
            AgePeriods
                label is "AgingPeriods"
            AgePeriods2
                no label
        single column
            visible when (not Company.UseIDM)
                Alignment
                    label is "AlignmentForms"
            CurrFl
                label is "ByCurrency"
            NaSumm
                label is "OverrideNationalAccountSummary"
            ReportOption
                label is "ReportSequence"
                raise blue alert when (true)
                    mouse over text is "For_CompaniesUsingIDM,Only_Customer_NumberAnd_Customer_Bill_ToAreSupported."
            UpdFrbalance
                label is "UpdateFranchiseManagementBalance"
            visible when (not Company.UseIDM)
                StmntFormat
                    label is "StatementFormat"
        header2 of "FormsText"
        two column
            AsxTextCode
                label is "TextCode"
                compact format
                initial value is blank
            IsoLocale
                label is "Locale"
                compact format
        visible when (Company.UseIDM)
            header2 of "PrinterOption"
            paragraph
                IDMPrinter
                IDMPrinter.Description
                    no label
                    display as text
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ARStatementPrintReport_RDG
                ReceivableStatement_RDG
            column2 of 25%
                ARStatementPrintReport_XPT
                ReceivableStatement_XPT
