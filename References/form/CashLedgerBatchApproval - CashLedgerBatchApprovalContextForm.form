CashLedgerBatchApprovalContextForm is a Form
    Layout
        paragraph
            BatchApprovalType
        paragraph
            CashLedgerBatchApproval
                label is "BatchNumber"
                display as text
            visible when (ApprovalCodeRequired)
                ApprovalCode
                    select is CashLedgerApprovalCodes
                visible when (not Status.Approved)
                    Approver
                        display as text
                    Approver.PreferredSimplePresentationName
                        no label
                        display as text
                    ApproverTeam.FinanceTeam
                        label is "ApproverTeam"
                        display as text
        paragraph
            display as text
                BatchDate
                BatchTotalAmount
                BatchRecordCount
                Status
                visible when (Processing)
                    IsProcessing
                        no label
                        display as tag
                            color of yellow when (Processing)
