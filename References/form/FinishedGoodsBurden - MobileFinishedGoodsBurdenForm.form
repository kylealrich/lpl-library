MobileFinishedGoodsBurdenForm is a Form
    title is "FinishedGoodsBurden"
    Layout
        single column
            FinishedGoodsBurden
                label is "Sequence"
                display as text
            BurdenCode
                label is "BurdenCode"
            BurdenCode.BurdenType
                display as text
            BurdenCode.Description
                label is "CodeDescription"
                display as text
        single column
            FlatAmount
        visible when (not BurdenCode.BurdenType.AmountPerBurdenUnit)
            single column
                AmountPerUnit
        visible when (BurdenCode.BurdenType.AmountPerBurdenUnit)
            single column
                AmountPerUnit
                    label is "<BurdenCode.AmountPerUnitLabel>"
                PerBurdenUnitQuantity
                    label is "<BurdenCode.PerBurdenUnitQuantityLabel>"
                PerBurdenUnitMultiplier
                    label is "<BurdenCode.PerBurdenUnitMultiplierLabel>"
        two column table
            column1
                PercentageOfInventoryCost
                    label is "Percent"
            column2
                CostTolerancePercentage
                    label is "TolerancePercent"
        single column
            Vendor
            visible when (Vendor entered)
                Vendor.VendorName
                    label is "VendorName"
                    display as text
        single column
            AlternateUnitOfMeasure
                label is "U\\O\\M"
            ZeroCost
                label is "Zero"
