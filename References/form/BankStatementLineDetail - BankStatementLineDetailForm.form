BankStatementLineDetailForm is a Form
    title is "LineDetail"
    Layout
        single column
            Description
                use text area of 2 lines
        three column distributed
            column1
                paragraph
                    BankStatementLine.BankTransactionCode
                        label is "PaymentCode"
                    BankStatementLine.BankTransactionCode.Description
                        no label
                        display as text
                RelatedReference
                paragraph
                    BankStatementLine.TransactionType
                    BankStatementLine.TransactionType.Description
                        no label
                        display as text
                BankReference
            column2
                paragraph
                    BankStatementLine.CashTransactionCategory
                        select is CashTransactionCategorySelect
                    BankStatementLine.CashTransactionCategory.Description
                        no label
                        display as text
                OverrideCategory
                BankStatementLine.TransactionDate
            column3
                paragraph
                    LineAmount
                    LineCurrency
                        no label
                        display as text
                TextReference
        visible when (BankStatement.BankStatementInterfaceHeader.CAMT05XFormat)
            header2 of "ISO20022BankTransactionCodes"
            three column
                column1
                    paragraph
                        BankStatementLine.ISO20022DomainCode
                        BankStatementLine.ISO20022DomainCode.Description
                            no label
                            display as text
                column2
                    paragraph
                        BankStatementLine.ISO20022FamilyCode
                        BankStatementLine.ISO20022FamilyCode.Description
                            no label
                            display as text
                column3
                    paragraph
                        BankStatementLine.ISO20022SubFamilyCode
                        BankStatementLine.ISO20022SubFamilyCode.Description
                            no label
                            display as text
            header4 of "_"
        visible when (BankStatementLineDetail entered)
            visible when (LineCurrencyNotCorporateBaseCurrency)
                paragraph
                    CorporateBaseAmount
                        display as text
                    CashManagementGroup.Currency
                        no label
                        display as text
            visible when (LineCurrencyNotCompanyCurrency)
                paragraph
                    CompanyCurrencyAmount
                        display as text
                    CashManagementAccount.LegalEntity.Currency
                        no label
                        display as text
            visible when (LineCurrencyNotLocationCurrency)
                paragraph
                    LocationCurrencyAmount
                        display as text
                    CashManagementAccount.CashManagementLocation.Currency
                        no label
                        display as text
        single column
            Comment
                use text area of 3 lines
            ReconSummaryRecord.BankStatementReconciliation.Comment
                label is "ReconciliationComment"
                use text area of 3 lines
