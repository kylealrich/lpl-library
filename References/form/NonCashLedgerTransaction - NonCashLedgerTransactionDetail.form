NonCashLedgerTransactionDetail is a Form
    title is "Detail"
    Layout
        visible when (not RecordExists)
            paragraph
                CashManagementAccount
                    label is "Account"
                CashManagementAccount.Title
                    no label
                    display as text
                BankStatement
            three column distributed
                column1
                    paragraph
                        TransactionNumber
                    TransactionPostingDate
                        label is "PostingDate"
                    paragraph
                        VoidTransaction
                        VoidDate
                column2
                    TransactionDate
                    TransactionPostingDatePeriod
                        label is "PostingPeriod"
                        display as text
                    VoidDatePeriod
                        label is "VoidPostingPeriod"
                        display as text
                column3
                    paragraph
                        TransactionAmount
                        DebitCreditIndicator
                    ReconciledAmount
                    ReconciliationVariance
            two column
                Description
                visible when (DistributionsOutOfBalance)
                    OutOfBalanceAmount
                        label is "VarianceDistributionOutOfBalanceAmount"
            four column
                TransactionDataOne
                TransactionDataTwo
                TransactionDataThree
                TransactionDataFour
            paragraph
                SystemCode
                Reference
            single column
                Comment
                    use text area of 3 lines
        visible when (RecordExists)
            single column
                BankStatement
            three column distributed
