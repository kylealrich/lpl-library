Amounts is a Form
    Layout
        two column
            column1
                paragraph
                    Currency
                    Currency.Description
                        no label
                        display as text
                paragraph
                    BaseCurrencyRate
                        show up to 10 characters
                paragraph
                    DownPayment.TransactionAmount
                        label is "DownPaymentAmount"
                    visible when (IsSameCurrencyAndDownPaymentEntered)
                        DownPayment.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        DownPayment.BaseAmount.ToCurrency
                            no label
                            display as text
            column2
                paragraph
                    IncentiveAmount.TransactionAmount
                        label is "IncentiveCost"
                    visible when (IsSameCurrencyAndIncentiveEntered)
                        IncentiveAmount.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        IncentiveAmount.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    InitialDirectCost.TransactionAmount
                        label is "InitialDirectCost"
                    visible when (IsSameCurrencyAndInitialDirectCostEntered)
                        InitialDirectCost.BaseAmount.EnteredCurrencyAmount
                            no label
                            display as text
                        InitialDirectCost.BaseAmount.ToCurrency
                            no label
                            display as text
                paragraph
                    InitialDirectCostVendor
                    InitialDirectCostVendor.VendorName
                        no label
                        display as text
