MobilePurchaseRequestContext is a Form
    title is "PurchaseRequest"
    Layout
        two column
            column1 of 50%
                Company
                    label is "Company"
                    display as text
                PurchaseOrderInterface.SourceDocumentNumeric
                    label is "Document"
                    display as text
                PurchaseOrderInterface.SourceDocumentOrigin
                    label is "System"
                    display as text
            column2 of 50%
                Company.Name
                    label is "CompanyName"
                    display as text
                PurchaseOrderInterface.LineNumber
                    label is "LineNumber"
                    display as text
                TotalCost
                    display as text
