MatchMessageCommentContext is a Form
    Layout
        display as text
            three column distributed
                Company.CompanyAndName
                    label is "Company"
                Vendor.DerivedVendorNameID
                button of "<PayablesInvoice.Invoice>"
                    link is PayablesInvoiceDetails
                    label is "Invoice"
                    display as link
            three column distributed
                button of "<PurchaseOrder.DisplayDocumentNumber>"
                    link is PurchaseOrderDetails
                    label is "PurchaseOrder"
                    display as link
                PurchaseOrderLine.PurchaseOrderLine
                    label is "Line"
                visible when (PurchaseOrderLine.ItemExists)
                    PurchaseOrderLine.Item
                        label is "Item"
