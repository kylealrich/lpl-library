MobilePurchaseOrderLineOptions is a Form
    title is "Options"
    Layout
        header3 of "OrderOptions"
        two column
            column1 of 50%
                EarlyDeliveryDate
                    label is "EarlyDeliveryDate"
                    display as required when (EarlyDeliveryDateRequired)
                StockWeight
                    label is "Weight"
                    display as text
            column2 of 50%
                LateDeliveryDate
                    label is "LateDeliveryDate"
                StockVolume
                    label is "Volume"
                    display as text
        single column
            EAMWorkOrderNumber
                label is "EAMWorkOrderNumber"
        two column grid
            InspectionRequired
                label is "Inspection"
            CertificationRequired
                label is "Certification"
        single column
            ExcludeFromAddOnChargeSpread
            MSDSRequired
                label is "MSDS"
                display as required when (MSDSRequiredCondition)
        header3 of "CodesAndClasses"
        single column
            Manufacturer
                label is "ManufacturerInformation"
                compact format
                select is MobileManufacturerSelectionList
            ManufacturerNumber
                label is "ManufacturerNumber"
        paragraph
            MajorPurchasingClass
                label is "MajorPurchasingClass"
                select is MobileMajorClassList
            MinorPurchasingClass
                label is "MinorPurchasingClass"
                select is MobileMinorActivePurchasingClasses
        single column
            UNSPSCCode
                compact format
                select is MobileUNSPSCCodeList
        paragraph
            StandardCommentCode
                label is "CommentCode"
                select is MobileCommentCodeSelect
            ICNCode
                select is MobileICNAndUOMSelect
        visible when (false)
            Item
                when value changed
                    refresh MSDSRequiredCondition
            ItemType
                when value changed
                    refresh MSDSRequiredCondition
                    refresh EarlyDeliveryDateRequired
            ShipToLocation
                when value changed
                    refresh MSDSRequiredCondition
