CreateRecurringInvoices is an ActionForm
    action is CreateRecurringInvoices
    Layout
        single column
            paragraph
                Company
                    select is Companies
                Company.Name
                    no label
                    display as text
            text of "Or"
            paragraph
                CompanyGroup
                    label is "CompanyGroup"
                CompanyGroup.Description
                    no label
                    display as text
            PrmFrequency
                label is "Frequency"
            CycleCode
                label is "Cycle"
            paragraph
                BillDate
                text of "Or"
                AddSubtract
                    label is "Number_ofDays"
                BillDays
                    no label
            StdCommCode
                label is "StandardComment"
                select is StandardCommentCodes
            UpdateOption
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                CreateRecurringInvoicesReport_RDG
                CreateRecurringInvoicesErrorReport_RDG
            column2 of 25%
                CreateRecurringInvoicesReport_XPT
                CreateRecurringInvoicesErrorReport_XPT
