SupplierUpdateMain is a Form
    Layout
        visible when (not actor.agent(SupplierSourceId).InactiveAtSomeLevel)
            visible when (PortalContact)
                display as text
                    visible when (not RegistrationComplete)
                        paragraph
                            text of "Registration_Incomplete"
                                header3
                                color of red
                        paragraph
                            text of "TakeTheFollowingActionsToCompleteRegistration"
                                header4
                        visible when (IncompleteCommodities)
                            paragraph
                                button of "AddCommodityCodes"
                                    link is CommodityCodeNav
                                    is primary
                        visible when (SomeRequiredQuestionsOrAttachmentsNotAnswered)
                            paragraph
                                button of "Respond_toQuestions"
                                    link is SupplierAllQuestions
                                    is primary
                        header2 of "_"
                    two column distributed
                        column1
                            Supplier
                            Supplier.BusinessType
                            Supplier.VATRegistrationNumber
                                label is "VATNumber"
                            paragraph
                                visible when (Supplier.TaxCertificationExists)
                                    button of "View<TaxCertificationLabel>"
                                        view Supplier.TaxCertification.File
                                        display as link
                        column2
                            visible when (RegistrationComplete)
                                RegistrationStatus
                                    display as tag
                                        color of green when (RegistrationComplete)
                                        color of red when (not RegistrationComplete)
                            visible when (not RegistrationComplete)
                                text of "_"
                            Supplier.DandBNbr
                                label is "Dun&Bradstreet"
                            Supplier.VATRegistrationCountry
                                label is "VATCountry/\\Jurisdiction"
                            visible when (SupplierGroup.DisplayGTINAndGLNInSupplierPortal)
                                Supplier.GlobalLocationNumber
                visible when (RegistrationComplete)
                    header2 of "_"
                    paragraph
                        text of "<SummaryText>"
                            italics
