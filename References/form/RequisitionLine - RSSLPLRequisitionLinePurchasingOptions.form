RSSLPLRequisitionLinePurchasingOptions is a Form
    title is "PurchasingOptions"
    Layout
        two column distributed
            paragraph
                visible when (DisplayPOCode)
                    POCode
                        display as required when (RequesterRel.RequirePOCode)
                    POCode.Description
                        no label
                        display as text
            paragraph
                visible when (DisplayBuyer)
                    Buyer
                        display as required when (RSSLPLRequireBuyer)
                    Buyer.Employee.FirstLastName
                        no label
                        display as text
                    visible when (HasBuyer)
                        button of icon.profile
                visible when (DisplayOnlyBuyer)
                    Buyer
                        display only
                    Buyer.Employee.FirstLastName
                        no label
                        display as text
                    visible when (HasBuyer)
                        button of icon.profile
                            link is MobileBuyerInformation
        two column distributed
            paragraph
                visible when (false)
                    TransientTaxEntity
                visible when (RequisitionLine entered)
                    visible when (DisplayTaxInfo)
                        PurchaseTaxable
                            label is "Taxable"
                            when value changed
                                refresh TaxableItem
                visible when (RequisitionLine not entered)
                    visible when (DisplayTaxInfo)
                        TransientPurchaseTaxable
                            label is "Taxable"
                            when value changed
                                refresh PurchaseTaxCodeRequired
                                refresh TaxableItem
                visible when (TaxableItem)
                    visible when (DisplayTaxInfo)
                        PurchaseTaxCode
                            label is "TaxCode"
                            select is ValidTaxCodesForEntity
                            display as required when (PurchaseTaxCodeRequired)
                        PurchaseTaxCode.Description
                            no label
                            display as text
            paragraph
                visible when (DisplayInspectionRequired)
                    InspectionRequired
                visible when (DisplayCertificationRequired)
                    CertificationRequired
        two column distributed
            visible when (DisplayBillCode)
                ConsignCode
                    label is "BillCode"
            visible when (LineExists)
                paragraph
                    visible when (SourcingEventRequired)
                        Contract
                            display as text
                    visible when (not SourcingEventRequired)
                        Contract
                            select is ContractsForCostDefaulting
                    visible when (LineExists)
                        ContractLine
                            label is "Line"
                            display as text
                    Tier
                        display as text
                    Preferred
                        display as text
            visible when (not LineExists)
                paragraph
                    visible when (SourcingEventRequired)
                        Contract
                            display as text
                    visible when (not SourcingEventRequired)
                        Contract
                            select is ContractsForCostDefaulting
                    visible when (not ItemType.Service)
                        ContractLine
                            label is "Line"
                            display as text
                    Tier
                        display as text
                    Preferred
                        display as text
