ReconciliationDetailContextForm is a Form
    title is "<DetailType>"
    Layout
        paragraph
            ReconciliationAccountStructure
            ReconciliationAccountStructure.Description
                no label
                display as text
        visible when (ReconciliationAccount.LevelType.Group)
            paragraph
                ReconciliationAccount.ReconciliationGroup
                    display only
        visible when (ReconciliationAccount.LevelType.NonAccount)
            paragraph
                ReconciliationAccount.NonAccountReconciliation
                    display only
        visible when (ReconciliationAccount.IsAccountWithinGroup)
            paragraph
                ReconciliationAccount.ParentReconciliationAccount.ReconciliationGroup
                    display only
        visible when (ReconciliationAccount.LevelType.Account)
            paragraph
                ReconciliationAccount.ReconciliationCodeBlock
                    display only
                ReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
                    no label
                    display as text
        visible when (AmortizationDetailsOutOfBalance)
            paragraph
                AmortizationOutOfBalanceErrorMessage
                    no label
                    display as tag
                        color of red
        paragraph
            Active
            visible when (false)
                ReconciliationAccount.CloseConfiguration
