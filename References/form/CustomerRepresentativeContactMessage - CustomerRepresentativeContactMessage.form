CustomerRepresentativeContactMessage is a Form
    is primary
    title is "PortalMessage"
    Layout
        paragraph
            CustomerRepresentative
                display only
            CustomerRepresentative.CustomerName
                no label
                display only
        paragraph
            CustomerRepresentativeContact
                label is "CustomerContact"
                display only
            CustomerRepresentativeContact.MainContact.FirstAndLastName
                no label
                display only
        two column
            CreationDateTime
                label is "CreationDate/Time"
                display only
            ReleaseStatus
                display only
        single column
            MessageTitle
                label is "Title"
            MessageText
                label is "Message"
                use text area of 5 lines
        two column
            Priority
            Status
                display only
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of icon.attach
                    view Attachment.File
                    label is "Attachment"
