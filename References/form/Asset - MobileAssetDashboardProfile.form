MobileAssetDashboardProfile is a Form
    title is "AssetDashboard"
    Layout
        two column table
            column1
                Picture.File
                    display as portrait image up to 2 lines
                        missing image is random background
                            foreground text is "<XiAssetDescriptionAbbreviation>"
            column2
                paragraph
                    text of "<AssetDescriptionMessage>"
                        bold
                    button of "Edit"
                        visible when (IsAssetEdit)
                        action is EditAsset
                        display as link
                        is primary
                    LastAssetItemPurchaseDate
                        label is "Purchased"
                        display as text
        two column table
            display as text
                column1
                    CostAndCurrency
                        label is "Cost"
                    TagNumber
                        label is "Tag"
                    AssetType
                        label is "Type"
                        compact format
                    button of "Transfer"
                        visible when (TransferAllowed)
                        form invoke is MobileAssetTransfer
                        is primary
                column2
                    DerivedStatus
                        no label
                        display as tag
                            color of yellow when (Status.Unreleased)
                            color of yellow when (Status.PostRelease)
                            color of green when (Status.Released)
                            color of gray when (Status.Disposed)
                    AssetOwnerName
                        label is "Owner"
                    Reference1
                    button of "Dispose"
                        visible when (DisposalAllowed)
                        action is FullDispose
        paragraph
            button of "Release"
                visible when (UnreleasedAndNeedsRelease)
                action is Unreleased.Release
                is primary
            button of "Release"
                visible when (PostReleaseAndNeedsRelease)
                action is PostRelease.Release
                is primary
            button of "Release"
                visible when (PostReleaseDisposal)
                action is PostRelease.ReleaseDisposal
                is primary
            button of "Release"
                visible when (UnreleasedAssetReinstatementsExists)
                action is PostRelease.ReleaseReinstatement
                is primary
            button of "Reset"
                visible when (UnreleasedAssetReinstatementsExists)
                action is PostRelease.ResetReinstatement
                is primary
            button of "Reset"
                visible when (UnreleasedAssetAdjustmentExists)
                action is PostRelease.ResetAdjustment
                is primary
            button of "Reset"
                visible when (UnreleasedAssetTransferExists)
                action is PostRelease.ResetTransfer
                is primary
            button of "Reset"
                visible when (ResetDisposalIsValid)
                action is PostRelease.ResetDisposal
                is primary
            button of "Release"
                visible when (UnreleasedAssetReinstatementsExists)
                action is PostRelease.ReleaseReinstatement
                is primary
