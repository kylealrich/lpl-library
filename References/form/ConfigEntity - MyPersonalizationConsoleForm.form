MyPersonalizationConsoleForm is a Form
    Layout
        header2 of "_"
        two column distributed
            column1
                ShortDisplayName
                    no label
                    header1
                    bold
                    display as text
                    raise red alert when (Status.Invalid)
                        mouse over text is "Invalid"
                    raise yellow alert when (Status.Inactive)
                        mouse over text is "Inactive"
                    raise green alert when (Status.Active)
                        mouse over text is "Active"
                paragraph
                    visible when (InViewContext)
                        BusinessView
                            header3
                            display as text
                    EntityType
                        header3
                        display as text
                    visible when (IsOverriddenByPersonalization)
                        OverriddenCount
                            label is "Overridden"
                            header3
                            display as tag
                                color of orange
                    visible when (Independent)
                        Independent
                            header3
                            display as tag
                                color of blue
            column2
                DerivedLastChange
                    no label
                    display as tag
                        color of blue
        header2 of "Description"
        paragraph
            visible when (Description entered)
                Description
                    no label
                    display as text
            visible when (Description not entered)
                text of "Not_Entered"
            button of "Update"
                action is UpdateDescription
                display as link
        header2 of "Actions"
        two column grid
            text of "Deactivate"
                bold
            text of "TurnsOffYourPersonalization.AllowsYouToSeeTheDeliveredApplicationView."
            text of "Activate"
                bold
            text of "TurnsOnAPreviouslyDeactivatedPersonalization.AllowsYouToSeeYourPersonalizedView."
            text of "Delete"
                bold
            text of "DeletesYourPersonalization.AllowsYouToSeeTheDeliveredApplicationView.CannotBeRetrieved."
