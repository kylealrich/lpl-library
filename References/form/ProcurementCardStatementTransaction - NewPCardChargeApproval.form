NewPCardChargeApproval is a CompositeForm
    title is "ProcurementCardCharge<ProcurementCardStatementTransaction.TransactionNumber>forStatement<ProcurementCardStatement>inProgram<ProcurementCardProgram>_-_<ProcurementCardProgram.Description>"
    context form is ProcurementCardChargeApproval
        background is theme color
    restrict action Unreleased.Create
        when (not Status.Unreleased)
    Actions
        action is Released.Approve
            action icon is icon.approve
            label is "Approve"
            hide when invalid
        action is Released.Dispute
            label is "Dispute"
            hide when invalid
        action is Approved.Reject
            action icon is icon.reject
            label is "Reject"
            hide when invalid
        action is Approved.Close
            label is "Close"
            hide when invalid
        action is Disputed.Approve
            action icon is icon.approve
            label is "Approve"
            hide when invalid
        action is Rejected.Approve
            action icon is icon.approve
            label is "Approve"
            hide when invalid
        action is save
            action icon is save
            label is "_"
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is refresh
            label is "_"
    Main is a Panel
        form is Main
    Distributions is a Panel
        title is "Distributions<DistributionCount>"
        valid when (IsNotPurchaseOrderCharges)
        list is ProcurementCardStatementTransactionDistribution set.ProcurementCardStatementTransactionDistributionList
    Comments is a Panel
        title is "Comments_and_Attachments"
        list is ProcurementCardStatementTransactionCommentRel.ProcurementCardStatementTransactionCommentList
    UserFields is a Panel
        form is UserFields
