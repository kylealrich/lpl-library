AddWasteItemToRequisition is an ActionForm
    action is AddWasteItemToRequisition
    title is "AddLineToRequisitionForWaste"
    Layout
        display as text
            two column
                PrmCompany
                PrmRequisition
            single column
                Contract.RepresentativeText
            two column
                ItemDescription
                VendorItem
                UOM
        paragraph
            PrmQuantity
            text of "QuantityWillDefaultTo1IfNotEntered"
        single column
            PrmWasteNoCharge
        paragraph
            visible when (not PrmWasteNoCharge)
                visible when (HasChargeableComponentItem)
                    visible when (RequisitionContextRel.ComponentsNeedProcedureLevel)
                        paragraph
                            PrmPrimary
                            text of "Or"
                            PrmRevision
        two column distributed
            column1
                visible when (CanDisplaySerialNumber)
                    PrmSerialNumber
                        label is "Serial"
                visible when (CanDisplayManufacturingDate)
                    PrmManufacturingDate
                        label is "ManufacturingDate"
                visible when (CanDisplayExpirationDate)
                    PrmExpirationDate
                        label is "ExpirationDate"
            column2
                visible when (CanDisplayLot)
                    PrmLot
                        label is "Lot"
                visible when (CanDisplayGTIN)
                    PrmGTIN
