PaymentExpanded is a Form
    Layout
        display as text
            four column distributed
                column1
                    Company.RepresentativeText
                    ReceivableProcessLevel.RepresentativeText
                        label is "ProcessLevel"
                    GeneralLedgerDate
                        label is "PostingDate"
                column2
                    paragraph
                        button of "<ReceivablePaymentHeader>"
                            link is BatchNav
                            label is "Batch"
                            display as link
                        ReceivablePayment
                            label is "Sequence"
                    CashCode.CashCodeAndDescription
                        label is "CashCode"
                    DepositDate
                column3
                    PaymentNumber
                        label is "Payment"
                    paragraph
                        TransactionAmount
                            label is "PaymentAmount"
                                header4
                                bold
                            header4
                            bold
                    visible when (TransientPaymentOpen entered)
                        TransientPaymentOpen
                            label is "Open"
                                header4
                                bold
                                color of red
                            header4
                            color of red
                        OriginalCurrency
                            label is "_"
                            header4
                            color of red
                    visible when (TransientPaymentOpen not entered)
                        TransientPaymentOpen
                            label is "Open"
                                header4
                                bold
                                color of green
                            header4
                            color of green
                        OriginalCurrency
                            label is "_"
                            header4
                            color of green
                column4
                    DerivedStatus
                        label is "Status"
                    CurrencyRate
                        label is "ExchangeRate"
                    paragraph
                        BaseAmount
                        Company.Currency.Currency
                            no label
            visible when (TypeOfPayment.CustomerPayment)
                four column distributed
                    column1
                        paragraph
                            Customer.Customer
                            Customer.Name
                                no label
                        TransferredToCustomer.Customer
                            label is "TransferToCustomer"
                        ReceivedNotAppliedReceivableGeneralLedgerCode.ReceivableGeneralLedgerCode
                            label is "<RNACodeLabel>"
                    column2
                        paragraph
                            ReceivablePayment.ReceivablePrepayment.ReferenceType
                                label is "Prepayment"
                            ReceivablePayment.ReceivablePrepayment.Invoice
                                no label
                        TransferredFromCustomer.Customer
                            label is "TransferFromCustomer"
                        ReceivablePaymentHeader.ReceivableOperator.ReceivableOperator
                            label is "Operator"
                    column3
                        ReceivablePaymentHeader.Currency.Currency
                            label is "BatchCurrency"
                        TransferAmountTransactionCurrency
                            label is "TransferAmount"
                        ReferenceNumber
                            label is "Reference"
                    column4
                        ReceivablePaymentHeader.CurrencyRate
                            label is "BatchCurrencyRate"
                        paragraph
                            ReceivablePaymentHeader.ReceivableLockBox.ReceivableLockBox
                                label is "Lockbox\\,Batch"
                            ReceivablePaymentHeader.LocBoxBatch
                                no label
                        paragraph
                            TransferDate
                            CancelDate
                            visible when (Cancelled)
                                text of "ReturnToMaker"
