ContractQuestionAnswerSummary is a Form
    title is "QuestionsWith**HaveACorrectAnswerDefined."
    Layout
        paragraph
            ContractQuestion.QuestionText
                label is number
                display as text
                use text area of 8 lines
            visible when (ContractQuestion.CreatedFromQuestionEntered)
                text of "CreatedFromAnswerToQuestion--<ContractQuestion.CreatedFromQuestionRel.QuestionText>"
                    italics
                    color of blue
            visible when (Contract.ProposedContractAtLeastSubmitted)
                visible when (ContractQuestion.AnsweredOnProposal)
                    text of "QuestionAnsweredByProposalRequester"
                        bold
                        color of blue
                visible when (ContractQuestion.AnsweredOnContract)
                    text of "QuestionToBeAnsweredByContractOwner"
                        bold
                        color of green
        single column
            visible when (ContractQuestion.HasAttachment)
                ContractQuestion.Attachment.File
                    no label
        single column
            visible when (ContractQuestion.DisplayAnswerRequiredText)
                single column
                    text of "<ConditionalAnswerLabel>"
                        italics
                        color of red
            ContractQuestionAnswerGroup
                label is "<ContractQuestion.AnswerTextWithRequired>"
        visible when (ContractQuestion.AllowResponseAttachment)
            paragraph
                visible when (ContractQuestion.MayRequireAttachmentNoAttachment)
                    text of "<ContractQuestion.AttachmentTextWithRequired>"
                        color of red
                visible when (not ContractQuestion.MayRequireAttachmentNoAttachment)
                    text of "<ContractQuestion.AttachmentTextWithRequired>"
                Attachment.File
                    no label
                visible when (HasAttachment)
                    button of "View"
                        view Attachment.File
                        display as link
        blank line
