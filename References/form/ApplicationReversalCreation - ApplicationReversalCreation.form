ApplicationReversalCreation is an ActionForm
    action is ApplicationReversalCreation
    Layout
        paragraph
            Company
                select is Companies
            Company.Name
                no label
                display as text
        paragraph
            text of "Or"
        paragraph
            CompanyGroup
                label is "CompanyGroup"
            CompanyGroup.Description
                no label
                display as text
        blank line
        single column
            Option
                label is "ReportOption"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                ApplicationReversalCreationReport_RDG
            column2 of 25%
                ApplicationReversalCreationReport_XPT
