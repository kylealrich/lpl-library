RequisitionSpreadAddOnChargeForm is a Form
    title is "RequisitionSpreadAddOnCharge"
    Layout
        three column distributed
            column1
                paragraph
                    AddOnCharge
                        label is "AddOnCharge"
                        select is AddOnChargesWithSpreadList
                    AddOnCharge.Description
                        no label
                        display as text
                TransientZeroCost
                    label is "ZeroCost"
            column2
                AddOnChargePercent
                    label is "Rate"
                SpreadMethod
            column3
                EnteredAddOnChargeAmount
                    label is "Amount"
                display as text
                    paragraph
                        CalculatedSpreadAmount
                            label is "Spread"
                        SpreadDifference
                            label is "Difference"
        header2 of "ProcessFlags"
        three column distributed
            column1
                paragraph
                    visible when (false)
                        TransientTaxEntity
                    Taxable
                    visible when (Taxable)
                        TaxCode
                            label is "Add-OnCostTax"
                            select is TaxCodesForEntity
                        Accrual
                            display as text
                ProductTaxCategory
            column2
                Summarize
                    label is "Summary"
            column3
                paragraph
                    PrintOnRequisition
                    AddOnCharge.LandedAddOnCharge
                        label is "Landed"
                        display as text
        header2 of "VendorInformation"
        three column distributed
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            PurchaseFromLocation
            TransientCurrency
                label is "Currency"
        visible when (not AddOnCharge.LandedAddOnCharge)
            single column
                PostingAccount
                    label is "Account"
                    compact format
