StudentRecordContextForm is a Form
    title is "<mode>Student"
    Layout
        six column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "District"
                        display as text
                paragraph
                    StudentRecord
                        label is "StudentId"
                paragraph
                    visible when (CurrentReceiptExists)
                        CurrentReceiptRecord.StudentActivityReceipt
                            label is "ReceiptNumber"
                            display as text
                    visible when (HasActivityFromAnotherSchool)
                        text of "StudentHasHistoricalActivityFromPriorSchool"
                    visible when (not CurrentReceiptExists)
                        visible when (not HasActivityFromAnotherSchool)
                            blank line
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    StudentLastName
                        label is "LastName"
                paragraph
                    visible when (CurrentReceiptExists)
                        ReceiptDate
                    visible when (HasActivityFromAnotherSchool)
                        DisplayHistory
                    visible when (not CurrentReceiptExists)
                        visible when (not HasActivityFromAnotherSchool)
                            blank line
            column3
                paragraph
                    StudentActivitySchool
                        label is "School"
                        select is SchoolSelectList
                paragraph
                    StudentFirstName
                        label is "FirstName"
                paragraph
                    visible when (CurrentReceiptExists)
                        ReferenceNumber
                    visible when (not CurrentReceiptExists)
                        blank line
            column4
                paragraph
                    StudentActivitySchool.SchoolName
                        no label
                        display as text
                paragraph
                    Active
                paragraph
                    blank line
            column5
                paragraph
                    visible when (StudentActivitySchool entered)
                        StudentActivitySchool.DefaultAccountingEntity.FunctionalCurrency
                            label is "Currency"
                            display as text
                    visible when (StudentActivitySchool not entered)
                        blank line
                paragraph
                    blank line
                paragraph
                    blank line
            column6
                visible when (HasAssignedActivities)
                    paragraph
                        TotalFeeAmount
                            display as text
                    paragraph
                        TotalReceipts
                            display as text
                    paragraph
                        BalanceDue
                            display as text
