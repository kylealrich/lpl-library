WorkRequest is an ActionForm
    action is WorkRequest
    title is "WorkRequest"
    Layout
        visible when (AllowCreationOfOneTimeTasks)
            single column
                CreateOneTimeTask
                    label is "AddAsOneTimeTask"
                        left of field
        visible when (CreateOneTimeTask)
            single column
                visible when (CloseManagementGroupRel.HasMultipleClosePeriodsOpen)
                    paragraph
                        OneTimeTaskAddOption
                            label is "AddOption"
                ClosePeriod
                    label is "Period"
                    compact format
                    select is OpenPeriodSelectList
                paragraph
                    OneTimeParentTask
                        label is "ParentTask"
                        select is ClosePeriodTaskSummarySelect
                    OneTimeParentTask.TaskName
                        no label
                        display as text
                visible when (OneTimeTaskNeedsApprovalCode)
                    paragraph
                        OneTimeApprovalCode
                            label is "ApprovalCode"
                        OneTimeApprovalCode.Description
                            no label
                            display as text
                blank line
                AddOneTimeTaskToProcess
                    label is "RequestTaskToBeAddedToTheProcessAsARecurringTask"
            header3 of "EnterDetailsAboutThisOneTimeTask"
            single column
                RequestDescription
                    label is "TaskName"
                RequestNotes
                    label is "Instructions"
                    use text area of 5 lines
                blank line
                paragraph
                    RequestBeginDate
                        label is "BeginDate"
                    RequestBeginTime
                        label is "At"
                paragraph
                    RequestDueDate
                        label is "DueDate"
                    RequestDueTime
                        label is "At"
                    OneTimeDueTimeSensitive
                        label is "IsTimeSensitive"
            blank line
            single column
                OneTimeLevelOfEffort
                    label is "EstimatedHoursToComplete"
            visible when (CloseManagementGroupRel.HasTaskTypes)
                header3 of "Type"
                two column
                    OneTimePrimaryType
                        label is "Primary"
                        select is PrimaryCloseTaskTypeSelect
                two column
                    OneTimeSecondaryType
                        label is "Secondary"
                        select is SecondaryCloseTaskTypeSelect
                two column
                    OneTimeTertiaryType
                        label is "Tertiary"
                        select is TertiaryCloseTaskTypeSelect
            header3 of "SelectWhoToAssignWorkTo"
            single column
                visible when (CreateOneTimeTask)
                    paragraph
                        RequestTeam
                            label is "Team"
                        RequestTeam.Description
                            no label
                            display as text
                    paragraph
                        RequestTeamMember
                            label is "PersonResponsible"
                            compact format
                            select is FinanceTeamMemberActiveSelect
                        RequestTeamMember.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                            no label
                            display as text
            header3 of "RequirementsForCompletion"
            single column
                paragraph
                    OneTimeRequiresApproval
                        label is "Approval"
                    visible when (OneTimeRequiresApproval)
                        OneTimeCompletionApprovalCode
                            label is "CompletionApprovalCode"
                            select is ApprovalCodesWithLevels
                        OneTimeCompletionApprovalCode.Description
                            no label
                            display as text
                OneTimeRequireSupportingDoco
                    label is "AttachSupportingDocumentation"
                OneTimeRequireJournalEntry
                    label is "AttachJournalEntryDetail"
            header3 of "Visibility"
            single column
                paragraph
                    OneTimeCompany
                        label is "Company"
                    OneTimeCompany.FinanceCompanyField.Name
                        no label
                        display as text
            two column
                OneTimePriority
                    label is "Priority"
                OneTimeRisk
                    label is "Risk"
        visible when (not CreateOneTimeTask)
            header3 of "SelectWhoToAssignWorkTo"
            paragraph
                RequestPerson
                    label is "PersonResponsible"
                RequestPerson.PreferredSimplePresentationName
                    no label
                    display as text
            header3 of "EnterDetailsAboutThisWorkRequest"
            single column
                paragraph
                    RequestBeginDate
                        label is "BeginDate"
                    RequestBeginTime
                        label is "At"
                paragraph
                    RequestDueDate
                        label is "DueDate"
                    RequestDueTime
                        label is "At"
            single column
                RequestDescription
                    label is "Description"
                RequestNotes
                    label is "Notes"
                    use text area of 5 lines
        header3 of "AddAnAttachmentOrURL"
        single column
            RequestAttachment
                label is "Attachment"
            RequestLink
                label is "URL"
        visible when (AddOneTimeTaskToProcess)
            blank line
            header3 of "AdditionalFieldsForAddingTheTaskToTheProcess"
            single column
                paragraph
                    OneTimeCalendar
                        label is "Calendar"
                    OneTimeCalendar.Description
                        no label
                        display as text
            single column
                paragraph
                    OneTimePeriodGroup
                        label is "PeriodGroup"
                    OneTimePeriodGroup.Description
                        no label
                        display as text
            single column independent
                text of "EnterNumberOfDaysFromThePeriodEndDate"
                    header4
                    bold
                    color of blue
            single column independent
                paragraph
                    OneTimeStartDays
                        label is "Begin"
                    OneTimeStartTime
                        label is "DaysFromPeriodEndAt"
                paragraph
                    OneTimeEndDays
                        label is "Due"
                    OneTimeEndTime
                        label is "DaysFromPeriodEndAt"
                    OneTimeDueTimeSensitive
                        label is "IsTimeSensitive"
                            left of field
            paragraph
                text of "<NumberOfDaysNote>"
                    bold
                    align as label
            blank line
            single column independent
                text of "OrEnterASpecificDayOfTheMonthForThePeriod"
                    header4
                    bold
                    color of blue
            single column independent
                paragraph
                    OneTimeStartDayOfMonth
                        label is "Begin"
                    OneTimeStartLastDayOfMonth
                        label is "DayOfTheMonth__Or__BeginOnTheLastDayOfTheMonth"
                            left of field
                    OneTimeStartTime
                        label is "At"
                paragraph
                    OneTimeStartNextMonth
                        label is "ForTheMonthFollowingThePeriod"
                paragraph
                    OneTimeEndDayOfMonth
                        label is "Due"
                    OneTimeEndLastDayOfMonth
                        label is "DayOfTheMonth__Or_____DueOnTheLastDayOfTheMonth"
                            left of field
                    OneTimeEndTime
                        label is "At"
                    OneTimeDueTimeSensitive
                        label is "IsTimeSensitive"
                            left of field
                paragraph
                    OneTimeEndNextMonth
                        label is "ForTheMonthFollowingThePeriod"
            blank line
            two column
                OneTimeHours
                    label is "EstimatedHoursToComplete"
                OneTimeWorkDaysOnly
                    label is "ScheduleTaskForWorkDaysOnly"
