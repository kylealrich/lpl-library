ItemLocationBalances is a Form
    Layout
        display as text
            four column distributed
                column1
                    DerivedAllocatableQuantityDisplay
                        label is "Allocatable"
                column2
                    paragraph
                        ItemLocation.DerivedStockOnHandQuantity
                            label is "StockOnHand"
                        visible when (IsCatchWeight)
                            Item.StockUOM
                                no label
                        visible when (not IsCatchWeight)
                            DerivedUOM
                                no label
                column3
                    paragraph
                        ItemLocation.SecondaryQuantity
                            label is "SecondaryOnHand"
                        Item.SecondaryUOM
                            no label
                column4
                    ItemLocation.DerivedIntransitQuantity
                        label is "Intransit"
            four column distributed
                column1
                    ItemLocation.DerivedUnallocatedQuantity
                        label is "Unallocated"
                    ItemLocation.DerivedInspectionHoldQuantity
                        label is "InspectionHold"
                    visible when (PreferenceCardTransaction)
                        ItemLocation.DerivedReservedQuantity
                            label is "Reserved"
                column2
                    ItemLocation.DerivedAllocatedQuantity
                        label is "Allocated"
                    ItemLocation.DerivedOnOrderQuantity
                        label is "OnOrder"
                    visible when (PreferenceCardTransaction)
                        ItemLocation.DerivedUnreservedQuantity
                            label is "Unreserved"
                column3
                    ItemLocation.DerivedInProcessQuantity
                        label is "InProcess"
                    ItemLocation.DerivedWorkInProgressQuantity
                        label is "WorkInProcess"
                column4
                    ItemLocation.DerivedBackorderedQuantity
                        label is "Backordered"
                    ItemLocation.DerivedKitchenInProcessQuantity
                        label is "KitchenInProcess"
