BankStatementDistributionLineForm is a Form
    is primary
    propagate as a drill
    title is "StatementLineDistribution"
    Layout
        three column distributed
            column1
                paragraph
                    BankStatement
                        display as text
                    BankStatementLine.StatementDate
                        display as text
                paragraph
                    BankStatementLine.LineNumber
                        display as text
                    BankStatementLine.SequenceNumber
                        no label
                        display as text
                BankStatementLineReference
                paragraph
                    visible when (BankStatementLineDetail entered)
                    StatementLineCategory
                        label is "LineDetailOverrideCategory"
                        display as text
            column2
                paragraph
                    CashManagementAccount
                        display as text
                    CashManagementAccount.Title
                        no label
                        display as text
                paragraph
                    BankStatementLine.LineAmount
                        display as text
                paragraph
                    GLTransactionAmount
                        label is "TransactionAmount"
            column3
                paragraph
                    BankStatementLine.CashTransactionCategory
                        label is "Category"
                        display as text
                    BankStatementLine.CashTransactionCategory.Description
                        no label
                        display as text
                paragraph
                    BankStatementLine.RelatedReference
                        display as text
                    BankStatementLine.Description
                        display as text
                Status
                    display as text
        blank line
        single column
            GLFinanceCodeBlock
                label is "FinanceCodeBlock"
                compact format
        single column
            Comment
                use text area of 3 lines
