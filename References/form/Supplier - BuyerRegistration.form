BuyerRegistration is a Form
    title is "Registration"
    Layout
        header2 of "PrimaryContact"
        two column distributed
            column1
                visible when (not SupplierExtEntityEnabled)
                    paragraph
                        LoginName
                            show up to 15 characters
                            display as required
                        Password
                            hidden entry
                            show up to 15 characters
                            display as required
                        ConfirmPassword
                            hidden entry
                            show up to 15 characters
                            display as required
                paragraph
                    MainContact.GivenName
                        label is "FirstName"
                        show up to 15 characters
                        display as required
                    MainContact.FamilyName
                        label is "LastName"
                        show up to 15 characters
                        display as required
                    ContactTitle
                        label is "Title"
                        show up to 15 characters
                paragraph
                    EmailAddress
                        show up to 20 characters
                        raise blue alert when (true)
                            mouse over text is "ContactWillBeSetToReceiveEmailNotifications;UseUpdateProcessToChangeFlag"
                    visible when (SupplierGroup.RequireEmailConfirmation)
                        ConfirmEmailAddress
                            show up to 20 characters
                            display as required
            column2
                paragraph
                    TelephoneNumber.InternationalPrefix
                        label is "MainCountry/\\JurisdictionCode"
                    TelephoneNumber.SubscriberNumber
                        label is "PhoneNumber"
                        display as required
                    TelephoneNumber.Extension
                        show up to 4 characters
                paragraph
                    MobilePhone.MobilePhoneNumber.InternationalPrefix
                        label is "MobileCountry/\\JurisdictionCode"
                    MobilePhone.MobilePhoneNumber.SubscriberNumber
                        label is "MobileNumber"
                    MobilePhone.SmsEnabled
                paragraph
                    FaxNumber.InternationalPrefix
                        label is "FaxCountry/\\JurisdictionCode"
                    FaxNumber.SubscriberNumber
                        label is "FaxNumber"
                    FaxNumber.Extension
                        show up to 4 characters
        header2 of "CompanyInformation"
        three column distributed
            column1
                TaxIdGroup.TaxIdType
                    display as required when (RequireTaxId)
                    when value changed
                        refresh RequireVAT
                        refresh RequireTaxId
                VATRegistrationCountry
                    display as required when (RequireVAT)
                    when value changed
                        refresh RequireVAT
                        refresh RequireTaxId
            column2
                TaxIdGroup.TaxId
                    show up to 15 characters
                    display as required when (RequireTaxId)
                    when value changed
                        refresh RequireVAT
                        refresh RequireTaxId
                VATRegistrationNumber
                    show up to 15 characters
                    display as required when (RequireVAT)
                    when value changed
                        refresh RequireVAT
                        refresh RequireTaxId
            column3
                paragraph
                    TaxCertification.File
                        label is "<TaxCertificationLabel>"
                        display as required when (TaxIdGroup.TaxIdType.TaxCertificationRequired)
                    visible when (TaxCertificationExists)
                        button of "View"
                            view TaxCertification.File
                            display as link
                paragraph
                    Vendor
                        label is "VendorID"
                    visible when (TaxIdVerifiedByVendormate)
                        text of "*VerifiedByVendormate"
                            bold
        visible when (ContactCanEnterInvoices)
            header2 of "SupplierCreatedInvoiceProcessing"
            two column
                text of "EnterAValueHereIfAllInvoicesAreOfTheSameType"
                    italics
                SupplierSubmittedInvoiceType
            two column
                SuppressDisplayOfDueDate
                    label is "SuppressDisplay_ofDueDateWhenSupplierEnteringInvoices"
                RequireInvoiceEntryOnPortal
            two column
                AllowMixedEntryOfInvoices
                AllowAdhocAddOnCharges
        header2 of "_"
        two column distributed
            column1
                text of "Mailing_Address"
                    header3
                single column
                    MailingAddress
                        form is PostalAddressShortRequired
                    visible when (SupplierGroup.DisplayTypeForRegistration)
                        MailingAddress.Type
            column2
                text of "Remit_To_Name_and_Address"
                    header3
                single column
                    visible when (not SameAsAddressAbove)
                        BillingAddress
                            form is PostalAddressShortRequired
                        visible when (SupplierGroup.DisplayTypeForRegistration)
                            BillingAddress.Type
                    SameAsAddressAbove
                        label is "CheckIfRemitToAddressIs_theSame_asMailingAddress"
                paragraph
                    BillingFirstName
                        label is "RemitToFirstName"
                    BillingLastName
                        label is "RemitToLastName"
        header2 of "AdditionalInformation"
        three column distributed
            column1
                DoingBusinessAs
                    show up to 15 characters
                BusinessType
            column2
                DandBNbr
                    label is "Dun&Bradstreet"
                    show up to 15 characters
                GlobalLocationNumber
            column3
                paragraph
                    ParentSupplier
                    ParentSupplierRel.SupplierName
                        no label
                        display as text
                WebAddress
                    label is "Website"
                    raise blue alert when (true)
                        mouse over text is "Enter_http://_WhenAdding_Website"
        three column distributed
            Active
                display only
            PreQualified
            GroupPurchasingOrganization
