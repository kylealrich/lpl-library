CloseTaskWizardSummary is a Form
    title is "<TaskName>Summary"
    Layout
        two column
            TaskName
                label is "Task"
                display as text
            TaskLevel
                label is "Level"
                display as text
        single column
            TaskDetail
                label is "Instructions"
                display as text
        two column
            BeginDaysFromPeriodEnd
                display as text
            BeginTime
                display as text
        two column
            DueDaysFromPeriodEnd
                display as text
            DueTime
                display as text
        single column
            ScheduleForWorkDaysOnly
                display as text
            HoursRequired
                display as text
        single column
            HasAttachment
                label is "HasAttachment"
                display as text
            blank line
        single column
            visible when (DefaultCompany entered)
                DefaultCompany.FinanceCompanyField.Name
                    label is "Company"
                    display as text
            DefaultCalendar.Description
                label is "CloseCalendar"
                display as text
            DefaultPeriodGroup.Description
                label is "PeriodGroup"
                display as text
            blank line
        two column
            FinanceTeam.Description
                label is "Team"
                display as text
            TaskOwner.FinanceTeamMember.TeamMember.PreferredSimplePresentationName
                label is "Owner"
                display as text
        two column
            Priority
                display as text
            Risk
                display as text
            blank line
