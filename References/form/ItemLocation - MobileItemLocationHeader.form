MobileItemLocationHeader is a Form
    title is "ItemLocation"
    Layout
        single column
            GeneralLedgerCategory
                label is "InventoryLocationAccountGroup"
                display as text
            GeneralLedgerCategory.Description
                label is "InventoryLocationAccountGroupDescription"
                display as text
            AddedDate
                label is "DateAdded"
        two column
            DefaultTransactionUOM.UnitOfMeasure
                label is "DefaultTransactionUOM"
                select is MobileValidTransactionUnitsOfMeasure
            DefaultSourceUOM.UnitOfMeasure
                label is "DefaultSourceUOM"
                select is ValidBuyUnitsOfMeasure
            visible when (DisplayLocationStockUOM)
                ItemLocationStockUOM.UnitOfMeasure
                    label is "LocationStockUOM"
                    select is ValidTrackedUnitsOfMeasure
        single column
            Buyer
            Buyer.Employee.PresentationNameSnapshot
                label is "BuyerName"
                display as text
            MaximumRequisitionQuantity
        visible when (not CartParLocation)
            paragraph
                Manufacturer
                    compact format
                ManufacturerNumber
        two column
            NoCharge
            Consignment
            SelectForSpecialCycleCount
        blank line
        single column
            FrozenForPhysicalInventory
                display only
        three column
            MovementClass
            CountAccuracy
            ForecastNumber
                compact format
        header3 of "TaxInformation"
        two column
            PurchaseTaxable
            PurchaseTaxCode
            TaxableWhenSold
            SellTaxCode
        header3 of "MaterialSafetyDataSheet"
        paragraph
            MSDSDate
                label is "Date"
            MSDSDocument
                label is "Document"
            MSDSVersion
                label is "Version"
        header3 of "Healthcare"
        single column
            PatientChargeable
            ChargeNumber
