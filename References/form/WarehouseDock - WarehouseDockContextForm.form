WarehouseDockContextForm is a Form
    Layout
        visible when (not RecordExists)
            three column distributed
                column1
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        WarehouseDock
                    paragraph
                        DockType
                column2
                    paragraph
                        InventoryLocation
                        InventoryLocation.Name
                            no label
                            display as text
                    paragraph
                        Description
                column3
                    paragraph
                        Active
        visible when (RecordExists)
            three column distributed
                column1
                    display as text
                        paragraph
                            Company.DerivedCompanyDisplay
                                label is "Company"
                        paragraph
                            WarehouseDock
                column2
                    paragraph
                        InventoryLocation.DerivedInventoryLocationIDName
                            label is "Location"
                            display as text
                    paragraph
                        Description
                column3
                    paragraph
                        Active
                    paragraph
                        DockType
