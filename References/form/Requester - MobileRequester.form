MobileRequester is a Form
    title is "Profile"
    restrict action Create
    restrict action Delete
    restrict action DeleteRequisition
    Actions
        action is save
    Layout
        two column
            column1
                Requester.Employee.ResourcePicture.File
                    display as portrait image
                        missing image is random background
                            foreground text is "<Requester.Employee.Name.Initials>"
            column2
                text of "<Requester.Employee.Name.PreferredFirstAndLastName>"
                    header3
                visible when (Requester.Employee.EmployeeWorkPhoneExists)
                    Requester.Employee.EmployeeWorkTelephone
                        label is "Phone"
                        display as text
                visible when (Requester.Employee.EmployeeWorkEmailAddressExists)
                    Requester.Employee.EmployeeWorkEmailAddress
                        label is "Email"
                        display as text
        paragraph
            Company
            Company.Name
                no label
                display as text
        paragraph
            RequestingLocation
                show up to 4 characters
            RequestingLocation.Name
                no label
                display as text
        single column
            ManualOverrideAllowed
                display as switch
            OverrideContractCost
                display as switch
            OverrideLastPOLastCost
                display as switch
            RequireVendorForServices
                display as switch
            RequireVendorForSpecials
                display as switch
            RequireCommodityCode
                display as switch
            AllowDisplayOfProcedureInfo
                display as switch
            SupplierRequisitionReviewer
                display as switch
            AllowDropship
                display as switch
            AllowBillTo
                display as switch
