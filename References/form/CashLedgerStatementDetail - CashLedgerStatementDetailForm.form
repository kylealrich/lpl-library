CashLedgerStatementDetailForm is a Form
    is primary
    title is "BankStatementDetail"
    Layout
        paragraph
            CashCode
                display as text
            CashCode.Currency
                no label
                display as text
            CashLedgerStatement
                label is "StatementNumber"
                display as text
        single column
            CashLedgerStatementDetail
                label is "LineNumber"
        blank line
        paragraph
            TransactionDate
        paragraph
            TransactionType
                display as text
        two column
            BankTransactionCode
                label is "PayCode"
                display as text
            BankTransactionCode.Description
                no label
                display as text
        paragraph
            AmountTransactionCurrency
                label is "Amount"
        blank line
        visible when (IsGeneralLedgerType)
            visible when (CashLedgerStatementDetailExist)
                paragraph
                    button of "TransactionEntry"
                        form invoke is CashLedgerTransactionDetail
        visible when (IsVendorType)
            two column
                Vendor
                    display as text
                Vendor.VendorName
                    no label
                    display as text
            two column
                ProcessLevel
                    label is "PayableProcessLevel"
                    display as text
                ProcessLevel.Name
                    no label
                    display as text
            two column
                PayGroup
                PayGroup.Name
                    no label
                    display as text
            two column
                VendorLocation
                    label is "RemitToLocation"
                VendorLocation.VendorName
                    no label
                    display as text
            paragraph
                button of "CashPayment"
                    form invoke is PayablePaymentDetail
        visible when (IsCustomerType)
            paragraph
                Customer
                    display as text
            paragraph
                button of "CashReceipt"
                    form invoke is ReceivablePaymentDetail
