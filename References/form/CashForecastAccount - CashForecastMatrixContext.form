CashForecastMatrixContext is a Form
    title is "CashForecastByAccount"
    Layout
        display as text
            paragraph
                CashForecast
                CashForecast.Description
                    no label
            paragraph
                CashForecastAccount.CashManagementAccount
                CashForecastAccount.CashManagementAccount.Title
                    no label
            paragraph
                CashForecast.ForecastDateRange.Begin
                    label is "ForecastStartDate"
                text of "-"
                CashForecast.ForecastDateRange.End
                    label is "EndDate"
                visible when (CanAddForecastTransaction)
                    button of "AddForecastTransaction"
                        action is AddForecastTransaction
