ContractLineImportTierCostForm is a Form
    is primary
    Layout
        display as text
            paragraph
                ContractGroup
                ContractGroup.ProcurementGroup.Description
                    no label
            paragraph
                ContractImport
                ContractImport.Name
                    no label
            paragraph
                ContractLineImport
                    label is "Line"
                ContractLineImport.ItemDescription
                    no label
        paragraph
            ContractImportTier
                label is "Tier"
                select is ContractImportTierSelect
            ContractImportTier.TierTitle
                no label
                display as text
        single column
            visible when (ContractLineImport.CannotUpdateGPO)
                TierCost
                    display as text
            visible when (not ContractLineImport.CannotUpdateGPO)
                TierCost
