SalesUpdate is an ActionForm
    action is SalesUpdate
    Layout
        single column
            paragraph
                Company
                Company.BillingCompany.Name
                    no label
                    display as text
                text of "Or"
                CompanyGroup
                    label is "CompanyGroup"
                CompanyGroup.Description
                    no label
                    display as text
            paragraph
                Customer
                    select is CustomerContextCompanyCustomerSelectList
                Customer.Name
                    no label
                    display as text
            paragraph
                ShipTo
                ShipTo.Name
                    no label
                    display as text
            ContrNbr
                label is "Contract"
            Date
                label is "CycleDate"
            UpdateOption
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                SalesUpdateReport_RDG
                SalesUpdateAuditListing_RDG
            column2 of 25%
                SalesUpdateReport_XPT
                SalesUpdateAuditListing_XPT
