MobileItemLocationContext is a Form
    title is "LocationDetails"
    Layout
        display as text
            visible when (not CartParLocation)
            two column table
                column1
                    Company
                    InventoryLocation
                        label is "Location"
                    Item
                    Item.Description
                        label is "ItemDescription"
                column2
                    Company.Name
                        label is "CompanyName"
                    InventoryLocation.Name
                        label is "LocationName"
                    Item.StockUOM
                    blank line
            paragraph
                Active
                Discontinued
            visible when (IsInventoryLocation)
                paragraph
                    StockOnHandQuantity
                        label is "StockOnHand"
                    AvailableQuantity
                        label is "AvailableToAllocate"
                    visible when (Company.CostingMethod.StandardCosting)
                        StandardCost
                    visible when (not Company.CostingMethod.StandardCosting)
                        DerivedAverageCost
