IntercompanyBillingDocumentHeaderForm is a CompositeForm
    is primary
    title is "<IntercompanyBillingDocumentFormTitle>"
    context form is IntercompanyBillingDocumentContextOnly
        background is theme color
    restrict action AddToSettlement
    Actions
        action is Unreleased.Release
            action icon is transfer
            hide when invalid
        action is Approved.Release
            action icon is transfer
            hide when invalid
        action is Unreleased.SubmitForApproval
            action icon is transfer
            hide when invalid
        action is Approved.OpenForEdit
            action icon is edit
            hide when invalid
        action is Unreleased.OneSourceCalculateTax
            hide when invalid
        action is Unreleased.ProcessVertex
            hide when invalid
        action is GenerateIDMDocument
            action icon is hidden
            hide when invalid
        action is ManualEmail
            action icon is hidden
            hide when invalid
        action is ManualPrint
            action icon is hidden
            hide when invalid
        action is Unreleased.Create
            action icon is create
            label is "_"
            hide when invalid
        action is previous record
            label is "_"
        action is next record
            label is "_"
        action is save
            label is "_"
        action is Unreleased.Delete
            label is "_"
        action is refresh
            label is "_"
    Main is a Panel
        form is IntercompanyBillingDocumentMain
    Lines is a Panel
        list is IntercompanyBillingDocumentLine set.primary
    Comments is a Panel
        list is IntercompanyBillingDocumentComment set.primary
    Attachments is a Panel
        list is IntercompanyBillingDocumentAttachment set.primary
    OriginatingJournalControl is a Panel
        visible when (ShowOriginatingJournalPanel)
        list is OriginatingJournalControlRel.GeneralLedgerJournalList
    OriginatingInvoice is a Panel
        visible when (ShowOriginatingInvoicePanel)
        list is OriginatingInvoiceRel.PayablesInvoiceList
    ApprovalInformation is a DashBoardPanel
        title is "ApprovalHistory"
        visible when (DisplayApprovalInformationPanel)
        show 4 columns
        Progress is a Panel
            visible when (RequiresApproval)
            triple width
            form is ProcessIndicatorForm
        History is a Panel
            visible when (IsSingleApprovalHistory)
            list is IntercompanyBillingDocumentApprovalHistoryRel.ICBDocumentApprovalHistoryCardList
        PayablesProgress is a Panel
            visible when (IsPayablesAndReceivablesApproval)
            triple width
            form is ProcessIndicatorForm
        PayablesHistory is a Panel
            visible when (IsPayablesAndReceivablesApprovalHistory)
            list is IntercompanyBillingDocumentApprovalHistoryRel.ICBDocumentApprovalHistoryCardList
        ReceivablesProgress is a Panel
            visible when (IsPayablesAndReceivablesApproval)
            triple width
            form is ProcessIndicatorFormForReceivables
        ReceivablesHistory is a Panel
            visible when (IsPayablesAndReceivablesApprovalHistory)
            list is IntercompanyBillingDocumentApprovalHistoryForReceivableRel.ICBDocumentApprovalHistoryCardList
    ApprovalHistory is a Panel
        visible when (DisplayApprovalTrackingPanel)
        list is IntercompanyBillingDocumentApprovalHistoryRel.primary
    PayablesApprovalHistory is a Panel
        title is "PayablesApprovalHistory"
        visible when (PayablesApprovalTrackingPanel)
        list is IntercompanyBillingDocumentApprovalHistoryRel.primary
    ReceivablesApprovalHistory is a Panel
        visible when (ReceivablesApprovalTrackingPanel)
        list is IntercompanyBillingDocumentApprovalHistoryForReceivableRel.primary
