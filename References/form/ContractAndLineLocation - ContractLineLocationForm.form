ContractLineLocationForm is a Form
    title is "LineLocation"
    Actions
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is save and close
    Layout
        display as text
            paragraph
                ContractGroup
                Contract
                Contract.Description
                ContractLine
        paragraph
            ContractAndLineLocation.Company
            ContractAndLineLocation.Company.Name
                no label
                display as text
        paragraph
            ContractAndLineLocation.Location
            ContractAndLineLocation.Location.Name
                no label
                display as text
        visible when (not Contract.ServicePurchaseType)
            paragraph
                ContractAndLineLocation.RequestingLocation
                ContractAndLineLocation.RequestingLocation.Name
                    no label
                    display as text
        paragraph
            visible when (Contract.EnableClinicalSystemUseLocations)
                ClinicalSystemUse
            visible when (ContractGroup.EnableTaxOverrideLocations)
                visible when (not Contract.ServicePurchaseType)
                    Taxable
                TaxCode
