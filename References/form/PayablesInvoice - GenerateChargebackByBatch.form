GenerateChargebackByBatch is an ActionForm
    action is PrintChargebacksByBatchInIDM
    Layout
        header3 of "MainParameters"
        paragraph
            PrmCompany
        paragraph
            PrmVendor
        paragraph
            PrmFirstChargeback
                label is "Chargeback"
                select is InvoicesValidForIDMPrinting
            PrmSecondChargeback
                no label
                select is InvoicesValidForIDMPrinting
        paragraph
            PrmThirdChargeback
                no label
                select is InvoicesValidForIDMPrinting
            PrmFourthChargeback
                no label
                select is InvoicesValidForIDMPrinting
        paragraph
            PrmFromDate
                label is "FromDate"
            PrmToDate
                label is "ToDate"
        paragraph
            PrmStatus
        blank line
        header3 of "Include"
        two column distributed
            paragraph
                PrmPrintComments
            paragraph
                PrmIncludeReceiptDetail
            paragraph
                PrmIncludePreviouslyPrinted
            paragraph
                PrmIncludeChargebacksOnHold
            paragraph
                PrmIncludeManualChargebacks
        visible when (PrmCompany.PrintPayablesChargeback)
            header3 of "PrinterOptions"
            paragraph
                PrmIDMPrinter
                PrmIDMPrinter.Description
                    no label
                    display as text
            visible when (PrmIDMPrinter not entered)
                paragraph
                    text of "DocumentsWillNotGetPrinted"
                        bold
