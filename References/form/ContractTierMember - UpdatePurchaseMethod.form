UpdatePurchaseMethod is an ActionForm
    action is UpdatePurchaseMethod
    Layout
        single column
            display as text
                ParmContractGroup.RepresentativeText
                    label is "ContractGroup"
                ParmContract.RepresentativeText
            ParmPurchaseMethod
                label is "PurchaseMethod"
            visible when (not Contract.SpecialItemsWillCostDefault)
                ParmUpdateSpecialsManufacturer
                    label is "AllowCostDefaultingOnSpecialItems"
