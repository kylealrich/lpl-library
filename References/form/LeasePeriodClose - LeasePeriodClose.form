LeasePeriodClose is an ActionForm
    action is LeasePeriodClose
    Layout
        single column
            CompanyOrCompanyGroup
                no label
                display as horizontal radio buttons
        visible when (CompanyOrCompanyGroup.Company)
            paragraph
                LseCompany
                    label is "Company"
                    select is PayablesCompanyList
                LseCompany.Name
                    no label
                    display as text
        visible when (CompanyOrCompanyGroup.CompanyGroup)
            paragraph
                GcgCompanyGroup
                    label is "CompanyGroup"
                    select is CompanyGroupsInFinanceEnterpriseGroup
                GcgCompanyGroup.Description
                    no label
                    display as text
        paragraph
            YearEnd
            UpdateOption
                label is "Update"
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                LeasePeriodCloseReport_RDG
            column2 of 25%
                LeasePeriodCloseReport_XPT
