NonCashLedgerTransactionContextForm is a Form
    title is "NonCashLedgerTransaction"
    Layout
        visible when (RecordExists)
            display as text
                paragraph
                    CashManagementAccount
                        label is "Account"
                    CashManagementAccount.Title
                        no label
                    Status
                paragraph
                    visible when (BudgetEditInProgress)
                        text of "BudgetEditsInProgress"
                            bold
                            color of red
                    visible when (BudgetEditFailure)
                        text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                            bold
                            color of red
