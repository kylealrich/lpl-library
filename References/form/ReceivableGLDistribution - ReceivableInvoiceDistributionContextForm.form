ReceivableInvoiceDistributionContextForm is a Form
    restrict action JournalizeDistributions
    restrict action NewJournalizeDistributions
    Layout
        visible when (Status.Unreleased)
            two column distributed
                column1
                    paragraph
                        ReceivableCompanyDataGroup.TransactionCompany
                            label is "TransactionCompany"
                        ReceivableCompanyDataGroup.TransactionCompany.Name
                            no label
                            display as text
                    paragraph
                        ReceivableCompanyGroup.GlCompany
                            label is "GlobalLedgerCompany"
                        ReceivableCompanyGroup.GlCompany.Name
                            no label
                            display as text
                    paragraph
                        DistributionAmount.CurrencyAmount
                            label is "DistributionAmount"
                column2
                    paragraph
                        ReceivableCompanyDataGroup.ReceivableDistributionCategory
                            label is "DistributionCategory"
                        ReceivableCompanyDataGroup.ReceivableDistributionCategory.Description
                            no label
                            display as text
                    paragraph
                        GeneralLedgerAccount
                            label is "GlobalLedgerAccount"
                            compact format
                    paragraph
                        Description
        visible when (not Status.Unreleased)
            two column distributed
                column1
                    paragraph
                        ReceivableCompanyDataGroup.TransactionCompany.RepresentativeText
                            label is "TransactionCompany"
                            display as text
                    paragraph
                        ReceivableCompanyDataGroup.TransactionCompany.RepresentativeText
                            label is "GlobalLedgerCompany"
                            display as text
                    paragraph
                        DistributionAmount.CurrencyAmount
                            label is "DistributionAmount"
                            display as text
                column2
                    paragraph
                        ReceivableCompanyDataGroup.ReceivableDistributionCategory
                            label is "DistributionCategory"
                            display as text
                        ReceivableCompanyDataGroup.ReceivableDistributionCategory.Description
                            no label
                            display as text
                    paragraph
                        GeneralLedgerAccount
                            label is "GlobalLedgerAccount"
                            compact format
                    paragraph
                        Description
                            display as text
