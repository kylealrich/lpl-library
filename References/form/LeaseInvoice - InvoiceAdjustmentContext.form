InvoiceAdjustmentContext is a Form
    Layout
        four column distributed
            column1
                CompanyRepresentativeText
                    label is "Company"
                    display as text
                Vendor.RepresentativeText
                    label is "Lessor"
                    display as text
            column2
                InvoiceRepresentativeText
                    label is "Invoice"
                    display as text
                Lease.LeaseRepresentativeText
                    label is "Lease"
                    display as text
            column3
                Status
                    display as tag
                        color of red when (Status.Unreleased)
                        color of yellow when (Status.Released)
                        color of green when (Status.Posted)
                paragraph
                    LeaseInvoice.PaymentNumber
                        label is "PaymentNumber"
                        display as text
                    Approved
                        display only
            column4
                paragraph
                    InvoiceDate
                        display as text
                    DueDate
                        display as text
                paragraph
                    InvoiceType
                        display as text
