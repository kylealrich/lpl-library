UpdateContactBankInformation is an ActionForm
    action is UpdateContactBankInformation
    Layout
        four column distributed
            BankInformationGroup.Country
                display as text
        visible when (BankInformationGroup.DisplayBankEntity)
            four column distributed
                BankInformationGroup.BankEntity
                    label is "<BankInformationGroup.DerivedBankEntityLabel>"
                    display as text
                ParmBankEntity
                    no label
                visible when (BankInformationGroup.EntityConfirmationRequired)
                    ConfirmBankEntity
                        label is "Confirm<BankInformationGroup.DerivedBankEntityLabel>"
            four column distributed
                visible when (BankInformationGroup.BankEntityExists)
                    BankInformationGroup.BankEntity.BankName
                        display as text
                    visible when (not SupplierGroup.RequireValidBankEntity)
                        ParmBankEntityName
                            no label
                visible when (not BankInformationGroup.BankEntityExists)
                    BankInformationGroup.BankEntityName
                        display as text
                    visible when (not SupplierGroup.RequireValidBankEntity)
                        ParmBankEntityName
                            no label
        visible when (BankInformationGroup.DisplayBankAccountNumber)
            four column distributed
                BankInformationGroup.DerivedDisplayBankAccountNumber
                    label is "<BankInformationGroup.DerivedBankAccountNumberLabel>"
                    display as text
                visible when (not BankInformationGroup.MaskBankInformationEntry)
                    ParmBankAccountNumber
                        no label
                visible when (BankInformationGroup.MaskBankInformationEntry)
                    ParmBankAccountNumber
                        no label
                        hidden entry
                visible when (BankInformationGroup.BankAccountNumberConfirmationRequired)
                    visible when (not BankInformationGroup.MaskBankInformationEntry)
                        blank line
                        ConfirmBankAccountNumber
                            label is "Confirm<BankInformationGroup.DerivedBankAccountNumberLabel>"
                    visible when (BankInformationGroup.MaskBankInformationEntry)
                        ConfirmBankAccountNumber
                            label is "Confirm<BankInformationGroup.DerivedBankAccountNumberLabel>"
                            hidden entry
        visible when (BankInformationGroup.DisplayBankAccountType)
            two column
                BankInformationGroup.BankAccountType
                    display as text
                ParmBankAccountType
                    no label
        visible when (BankInformationGroup.DisplayBankCurrency)
            two column
                BankInformationGroup.BankCurrency
                    display as text
                ParmBankCurrency
                    no label
        visible when (BankInformationGroup.DisplayCrossBorderIdentifier)
            two column
                BankInformationGroup.CrossBorderIdentifier
                    display as text
                ParmCrossBorderIdentifier
                    no label
        visible when (BankInformationGroup.DisplaySwiftID)
            two column
                BankInformationGroup.SwiftID
                    display as text
                ParmSwiftID
                    no label
        visible when (BankInformationGroup.DisplayBankingCode)
            two column
                BankInformationGroup.BankingCode
                    display as text
                ParmBankingCode
                    no label
        visible when (BankInformationGroup.DisplayBankID)
            two column
                BankInformationGroup.BankID
                    display as text
                ParmBankID
                    no label
        visible when (BankInformationGroup.DisplayAssignmentNumber)
            two column
                BankInformationGroup.AssignmentNumber
                    display as text
                ParmAssignmentNumber
                    no label
        visible when (BankInformationGroup.DisplayGiroNumber)
            two column
                BankInformationGroup.GiroNumber
                    display as text
                ParmGiroNumber
                    no label
        visible when (BankInformationGroup.DisplayBACSReference)
            two column
                BankInformationGroup.BACSReference
                    display as text
                ParmBACSReference
                    no label
        visible when (BankInformationGroup.DisplayBACSName)
            two column
                BankInformationGroup.BACSName
                    display as text
                ParmBACSName
                    no label
        visible when (BankInformationGroup.DisplayCreditCardNumber)
            two column
                BankInformationGroup.DerivedDisplayCreditCardNumber
                    label is "CreditCardNumber"
                    display as text
                visible when (not BankInformationGroup.MaskBankInformationEntry)
                    ParmCreditCardNumber
                        no label
                visible when (BankInformationGroup.MaskBankInformationEntry)
                    ParmCreditCardNumber
                        no label
                        hidden entry
