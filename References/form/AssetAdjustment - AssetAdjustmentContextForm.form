AssetAdjustmentContextForm is a Form
    Layout
        display as text
            three column distributed
                paragraph
                    Asset
                    Asset.Description
                        no label
                Asset.DerivedStatus
                    label is "Status"
                visible when (IsTagEntered)
                    TagNumber
            visible when (Asset.LeasedAsset)
                paragraph
                    Asset.AssetLease.LeaseCompany
                        label is "LeaseCompany"
                    Asset.AssetLease.LeaseCompany.Name
                        no label
                paragraph
                    Asset.AssetLease.Lease
                    Asset.AssetLease.Lease.Description
                        no label
            three column distributed
                AdjustmentDate
                AdjustmentStatus
                paragraph
                    CreationDate
                    CreatedBy
            visible when (AssetFundsExists)
                button of "FundAudit"
                    link is AssetFundAudit
                    display as link
