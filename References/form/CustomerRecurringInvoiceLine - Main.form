Main is a Form
    Layout
        three column distributed
            column1
                visible when (LineType.Special)
                    Item
                        show up to 20 characters
                    ItemDescription
                        label is "Description"
                visible when (not LineType.Special)
                    Item
                        show up to 20 characters
                    ItemDescription
                        label is "Description"
                        display as text
                StartDate
                ZeroAfterUse
            column2
                Quantity
                UnitPrice
                StopDate
                ActionCode
            column3
                LineType
                SellingUnitOfMeasure
                    label is "SellU\\O\\M"
                SellingPriceUnitOfMeasure
                    label is "SellingPriceU\\O\\M"
        three column distributed
            visible when (ActionCode.SpreadQuantity)
                TotalQuantity
                RecurringInvoiceParameter.NumberOfInvoices
                    label is "NumberOfInvoices"
                    display as text
                Quantity
                    label is "QuantityPerPeriod"
                    display as text
        header2 of "Payment"
        three column distributed
            column1
                TaxExemptCode
            column2
                paragraph
                    TaxCode
                    TaxCode.Description
                        no label
                        display as text
        header2 of "SalesData"
        three column distributed
            column1
                paragraph
                    Territory
                    Territory.Description
                        no label
                        display as text
                CommissionSplitPercentage
                    label is "CommissionSplit"
                visible when (IsHSNSACCodeEnabled)
                    paragraph
                        HSNSACCode
                        HSNSACCode.Description
                            no label
                            display as text
            column2
                paragraph
                    SalesRepresentative
                        label is "SalesRepresentative1"
                    SalesRepresentative2.Name
                        no label
                        display as text
                CommissionRate1
                    label is "Commission"
            column3
                paragraph
                    SalesRepresentative2
                    SalesRepresentative2.Name
                        no label
                        display as text
                CommissionRate2
                    label is "Commission"
