POLineCostView is a Form
    title is "POLineCost"
    Layout
        display as text
            paragraph
                PurchaseOrder
                PurchaseOrder.POCode
                    label is "P\\OCode"
            paragraph
                LineNumber
                    label is "Line"
            paragraph
                PurchaseOrder.Released
                    label is "POReleased"
            paragraph
                PurchaseOrder.ShipToLocation
                    label is "ShipTo"
            paragraph
                Item
                ItemType
                    no label
            paragraph
                VendorBuyUnitCost
                    label is "UnitCost"
                EnteredBuyUOM
                    no label
                PurchaseOrder.Currency
                    label is "Currency"
                visible when (not CostOption.CostRequired)
                    CostOption
            paragraph
                AddOnChargesForALineForUI
                    label is "TotalAddOnChargeAmount"
            paragraph
                OrderedAmount
            paragraph
                InvoicedTaxAmount
                AccruedTaxAmount
            paragraph
                LandedUnitCost
                EnteredBuyUOM
                    no label
            paragraph
                ExtendedAmount
                    label is "ExtendedLineAmount"
            visible when (not ItemType.Service)
                paragraph
                    DerivedNonServiceMatchedAmount
                        label is "MatchedAmount"
                paragraph
                    DerivedMatchedNotReceivedAmount
                        label is "MatchedNotReceivedAmount"
            visible when (ItemType.Service)
                paragraph
                    MatchServiceAmount
                        label is "MatchedServiceAmount"
            paragraph
                OpenToMatchAmount
            paragraph
                ServiceCancelAmount
                    label is "CancelledAmount"
            paragraph
                CostOption
            paragraph
                CostCode
                    label is "CostSource"
            paragraph
                TaxCode
            paragraph
                Contract.ContractGroup
                    label is "ContractGroup"
            paragraph
                Contract
            paragraph
                Tier
            paragraph
                Preferred
