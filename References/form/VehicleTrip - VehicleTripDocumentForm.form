VehicleTripDocumentForm is a Form
    called out actions only
    Layout
        single column
            column1 of 50%
                paragraph
                    Company
                        display as text
                    Company.Name
                        no label
                        display as text
                paragraph
                    InventoryLocation
                        display as text
                    InventoryLocation.Name
                        no label
                        display as text
                paragraph
                    VehicleTrip
                        label is "Trip_Number"
                        display as text
                paragraph
                    DerivedVehicleName
                        label is "Vehicle"
                        display as text
                paragraph
                    Vehicle.VehicleIdentifier
                        label is "Vehicle_Identifier"
                        display as text
                paragraph
                    VehicleOperator
                        display as text
                paragraph
                    DerivedCurrentLoadWeight
                        label is "Total_Load_Weight"
                        display as text
                        raise yellow alert when (WeightAlert)
                    visible when (WeightAlert)
                        WeightAlertMessage
                            no label
                paragraph
                    DerivedCurrentLoadVolume
                        label is "Total_Load_Volume"
                        display as text
                        raise yellow alert when (VolumeAlert)
                    visible when (VolumeAlert)
                        VolumeAlertMessage
                            no label
