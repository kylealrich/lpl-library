ProjectContractInvoiceCommentForm is a Form
    is primary
    title is "ProjectContractInvoiceComment"
    Layout
        two column
            column1
                FinanceEnterpriseGroup
                    display as text
            column2
                FinanceEnterpriseGroup.EnterpriseGroup.Description
                    no label
                    display as text
        single column
            ProjectContractInvoice
                display as text
            Subject
            Comment
                use text area of 3 lines
            From
            visible when (HasComment)
                CommentDate
                    display as text
            DocumentURL
        paragraph
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
            visible when (ProjectContract.UseIDM)
                SendToCustomer
        single column
            PrintOnInvoice
