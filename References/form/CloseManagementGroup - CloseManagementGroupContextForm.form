        four column distributed
            column1
                ReopenTaskReasonCodeRequired
                    label is "ReopeningTask"
                VoidReasonCodeRequired
                    label is "VoidingTask"
            column2
                RejectReasonCodeRequired
                    label is "RejectingTaskApproval"
                StartLateReasonCodeRequired
                    label is "StartingTaskLate"
            column3
                CloseLateReasonCodeRequired
                    label is "ClosingTaskLate"
                EstimateReasonCodeRequired
                    label is "UpdatingTaskEstimate"
            column4
                visible when (RequireApprovalOfOneTimeTasks)
                    RejectOneTimeTaskReasonCodeRequired
                        label is "RejectingOneTimeTask"
        header2 of "OneTimeTasks"
        three column distributed
            column1
                AllowOneTimeTasks
                    label is "AllowCreation"
            column2
                RequireApprovalOfOneTimeTasks
                    label is "RequireApprovalBeforeWorking"
            column3
                paragraph
                    OneTimeTaskDefaultApprovalCode
