MobileFranchiseChargeSlidingScale is a Form
    title is "FranchiseChargeSlidingScale"
    restrict action Create
    restrict action Delete
    restrict action CreateNoteBasedCharge
    restrict action CreateSalesBasedCharge
    restrict action CreateSpecialCharge
    Actions
        action is Delete
            hide when invalid
        action is save
            label is "_"
    Layout
        paragraph
            Company
            Company.BillingCompany.Name
                no label
        paragraph
            FranchiseStandardCharge.Charge
                label is "Charge"
            Description
                no label
        paragraph
            FranchiseStandardCharge.Currency
                label is "Currency"
        paragraph
            Active
        blank line
        two column
            column1
                BaseAmount
                    display as text
                StepOperand
                    label is "ScaleOption"
            column2
                text of "StepLimits"
                    center
                    bold
                paragraph
                    text of "_\\1"
                    StepLimits.StepLimit[1]
                        no label
                    StepPercents.StepPercent[1]
                        no label
                paragraph
                    text of "_\\2"
                    StepLimits.StepLimit[2]
                        no label
                    StepPercents.StepPercent[2]
                        no label
                paragraph
                    text of "_\\3"
                    StepLimits.StepLimit[3]
                        no label
                    StepPercents.StepPercent[3]
                        no label
                paragraph
                    text of "_\\4"
                    StepLimits.StepLimit[4]
                        no label
                    StepPercents.StepPercent[4]
                        no label
                paragraph
                    text of "_\\5"
                    StepLimits.StepLimit[5]
                        no label
                    StepPercents.StepPercent[5]
                        no label
                paragraph
                    text of "_\\6"
                    StepLimits.StepLimit[6]
                        no label
                    StepPercents.StepPercent[6]
                        no label
                paragraph
                    text of "_\\7"
                    StepLimits.StepLimit[7]
                        no label
                    StepPercents.StepPercent[7]
