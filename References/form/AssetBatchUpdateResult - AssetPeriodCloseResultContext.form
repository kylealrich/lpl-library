AssetPeriodCloseResultContext is a Form
    Layout
        three column
            column1
                paragraph
                    visible when (IsBookEntered)
                        Book
                        Book.Description
                            no label
                            display as text
                    visible when (IsBookGroupEntered)
                        BookGroup
                        BookGroup.Description
                            no label
                            display as text
                paragraph
                    visible when (CompanyEntered)
                        Company
                        Company.GeneralLedgerCompany.Name
                            no label
                            display as text
                    visible when (CompanyGroupEntered)
                        CompanyGroup
                        CompanyGroup.Description
                            no label
                            display as text
                paragraph
                    visible when (AssetTransactionsExists)
                        JournalizeGroup
                paragraph
                    visible when (AssetTransactionsExists)
                        button of "ViewJournals"
                            link is ViewJournal
                            display as link
            column2
                paragraph
                    CreateDate
                        label is "CreationDate"
                paragraph
                    CreatedBy
                paragraph
                    Status
                        raise red alert when (ErrorsExist)
            column3
                visible when (IsBookEntered)
                    PeriodClose
                        no label
                visible when (IsBookEntered)
                    PeriodEndDate
                        label is "PeriodEnding"
                paragraph
                    visible when (IsBookGroupEntered)
                        button of "ViewPeriodEnding"
                            link is ViewPeriodEnding
                            display as link
