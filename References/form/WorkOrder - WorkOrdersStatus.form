WorkOrdersStatus is a CompositeForm
    is primary
    title is "WorkOrder_<DerivedWorkOrder>"
    context form is WorkOrdersStatusContext
        background is theme color
    Actions
        action is Unreleased.Release
            action icon is release
            hide when invalid
        action is Unreleased.Explode
            action icon is process
            hide when invalid
        action is previous record
            label is "_"
            hide when invalid
        action is next record
            label is "_"
            hide when invalid
        action is Unreleased.Create
            label is "_"
        action is save
            label is "_"
            hide when invalid
        action is Unreleased.Delete
            label is "_"
        action is refresh
            label is "_"
    FinishedGoods is a Panel
        form is FinishedGoods
    Burdens is a Panel
        list is WorkOrderBurdensRel.Burdens
    Components is a Panel
        list is WorkOrderItemsRel.ComponentsForWorkOrder
    Byproducts is a Panel
        list is WorkOrderByproductRel.ByproductsForWorkOrder
    Details is a Panel
        visible when (DetailTracked)
        list is FinishedGoodDetailsRel.Details
    Comments is a Panel
        list is WorkOrderComment set.WorkOrderCommentList
