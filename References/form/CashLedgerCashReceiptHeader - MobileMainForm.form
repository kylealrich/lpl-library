MobileMainForm is a Form
    title is "MainForm"
    Layout
        two column
            column1 of 50%
                Company.OrigCompany.Name
                    label is "Company"
                    display as text
            column2 of 50%
                Company.OrigCompany.Currency
                    display as text
        two column
            column1 of 50%
                TransactionType
                    label is "ReceiptType"
                    display as text
            column2 of 50%
                PostDate
                    display as text
        two column
            column1 of 50%
                CurrencyTable.Description
                    label is "CurrencyTable"
                    display as text
            column2 of 50%
                GeneralLedgerSourceCode
                    label is "SourceCode"
                    display as text
        paragraph
            NumberOfFinancialInstruments
                display as text
        paragraph
            Description
                display as text
        paragraph distributed
            visible when (ApprovalCostCenter entered)
                ApprovalCostCenter
                    display as text
            visible when (CashProcessLevel entered)
                CashProcessLevel
                    label is "ProcessLevel"
                    display as text
        paragraph distributed
            visible when (ApprovalCategory entered)
                ApprovalCategory
                    display as text
        single column
            ReceiptAttachment.File
            CommentText
                label is "Comments"
                use text area of 3 lines
