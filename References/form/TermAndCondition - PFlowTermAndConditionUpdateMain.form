PFlowTermAndConditionUpdateMain is a Form
    title is "TermAndCondition"
    Layout
        visible when (not UpdatesToTextExist)
            single column
                Title
                    display as text
                HeaderText
                    display as text
                Description
                    display as text
                AllowModification
                    display as text
        visible when (UpdatesToTextExist)
            single column
                DerivedComparedTitle
                    label is "Title"
                    display as text
                DerivedComparedHeaderText
                    label is "HeaderText"
                    display as text
                DerivedComparedDescription
                    label is "Description"
                    display as text
                AllowModification
                    display as text
