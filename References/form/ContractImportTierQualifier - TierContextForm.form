TierContextForm is a Form
    title is "ContractTierQualifier"
    Layout
        display as text
            paragraph
                ContractImportTier
                    label is "Tier"
                ContractImportTier.TierTitle
                    no label
            single column
                BaseTier
            paragraph
                ContractImportTierQualifier
                    label is "Qualifier"
                OrGroup
                    label is "Group"
            paragraph
                PurchaseType
                PurchaseBy
            single column
                PurchaseOperator
            paragraph
                PurchaseAmtPct.PurchasePercent
                    label is "PurchasePercentOfAllPurchases"
                PurchaseAmtPct.PurchaseAmount
                    label is "OrPurchaseAmount"
            visible when (PurchaseType.TargetedPurchases)
                paragraph
                    TargetedPurchasesFromDate
                        label is "TargetedPurchasesFromDate"
                    TargetedPurchasesToDate
                        label is "TargetedPurchasesToDate"
