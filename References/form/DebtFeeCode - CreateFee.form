CreateFee is an ActionForm
    action is CreateFee
    title is "CreateFee"
    Layout
        display as text
            single column
                PrmDebtInstrument
                    label is "DebtInstrument"
                DebtFeeCode
        blank line
        single column
            PrmDescription
                label is "FeeDescription"
        paragraph
            PrmPayee
                label is "Payee"
            PrmPayee.Description
                no label
                display as text
        two column
            PrmFeeScheduleCreationParameter.PaymentFrequency
            PrmFeePaymentMethod
                label is "PaymentMethod"
        visible when (PrmFeeScheduleCreationParameter.RequiresNumberOfDays)
            single column
                PrmFeeScheduleCreationParameter.NumberOfDays
        visible when (PrmFeeScheduleCreationParameter.RequiresDayOfWeek)
            single column
                PrmFeeScheduleCreationParameter.DayOfWeek
        visible when (PrmFeeScheduleCreationParameter.RequiresDayOfMonth)
            four column
                PrmFeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[1]
                    label is "DayOfMonth"
                PrmFeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[2]
                    no label
                PrmFeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[3]
                    no label
                PrmFeeScheduleCreationParameter.DayOfMonthArray.DayOfMonth[4]
                    no label
        single column
            PrmFeeScheduleCreationParameter.PaymentBasis
            PrmFeeScheduleCreationParameter.PaymentAmount
