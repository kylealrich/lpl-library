AR751Main is a Form
    title is "Main"
    Layout
        display as text
            two column distributed
                CurrentPlusBillOfExchangeBalance
                    label is "CurrentBalance"
                ActiveStatus
            two column distributed
                CurrentBalance
                    label is "InvoiceBalance"
                visible when (BOEProcessing)
                    BillOfExchangeBalance
            two column distributed
                OpenOrderAmount
                    label is "OpenOrders"
                Contact
            two column distributed
                PercentOfBalance
                    label is "PercentOfLimit"
                PhoneNumber
                    label is "Telephone"
            two column distributed
                CreditLimit
                ReceivableHoldCode
                    label is "HoldCode"
            two column distributed
                CreditLimitDate
                TermsCode
            two column distributed
                DerivedHighBalance
                    label is "HighestBalance"
                TotalReturnToMaker
                    label is "ReturnToMakerPaymentCount"
            two column distributed
                DisputedInvoiceAmount
                    label is "DisputeAmount"
                DisputedInvoices
                    label is "DisputeCount"
