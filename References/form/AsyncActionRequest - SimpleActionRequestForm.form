SimpleActionRequestForm is a Form
    title is "ActionRequest"
    Layout
        two column
            DataArea
                display only
            IsAsyncActive
                label is "Active"
                raise red alert when (DataAreaRedAlert)
                    mouse over text is untranslatable:"<SuspendedMessage>"
                raise yellow alert when (DataAreaYellowAlert)
                    mouse over text is "SystemUpgradeRequestsAreCurrentlyActiveAndMustBeCompleteBeforeProcessingCanContinue"
        single column
            Actor
                label is "Actor"
                display only
        two column
            column1
                visible when (EmailAddress entered)
                    EmailAddress
                        raise yellow alert when (true)
                            mouse over text is "ThisFieldHasBeenDeprecated.PleaseUseTheOtherEmailAddressField"
                EmailAddressMultiple
                    use text area of 1 lines
            column2
                NotificationType
        two column
            ImplementingClass
            AsyncAction
        header2 of "Scheduling"
        paragraph
            PendingScheduling
            IsScheduled
            valid when (not DisableConcurrency)
                ScheduleConcurrency
                    label is "Concurrency"
