RemainingPOBalanceReport is an ActionForm
    action is RemainingPOBalanceReport
    title is "RemainingPurchaseOrderBalanceReport"
    Layout
        header2 of "Parameters"
        single column
            FormSelection
                no label
                display as horizontal radio buttons
                when value changed
                    Company =  blank
                    CompanyGroup =  blank
                    ProcureGroup =  blank
            visible when (FormSelection.Company)
                paragraph
                    Company
                    Company.Name
                        no label
                        display as text
                paragraph
                    Location
                        label is "ShipToLocation"
                    Location.Name
                        no label
                        display as text
            visible when (FormSelection.CompanyGroup)
                paragraph
                    CompanyGroup
                    CompanyGroup.Description
                        no label
                        display as text
            visible when (FormSelection.ProcurementGroup)
                single column
                    BuyerSelection
                        no label
                        display as horizontal radio buttons
                        when value changed
                            BuyerCode =  blank
                            BuyerGrp =  blank
                    paragraph
                        ProcureGroup
                            label is "ProcurementGroup"
                        ProcureGroup.Description
                            no label
                            display as text
                        visible when (BuyerSelection.Buyer)
                            BuyerCode
                                label is "Buyer"
                        visible when (BuyerSelection.BuyerGroup)
                            BuyerGrp
                                label is "BuyerGroup"
        header2 of "Main"
        single column
            MainSelection
                label is "FilterBy"
                display as horizontal radio buttons
                when value changed
                    FrPoCreateDate =  blank
                    ToPoCreateDate =  blank
                    FrEarlyDlDate =  blank
                    ToEarlyDlDate =  blank
                    PoNumber.PO222PoNumberGroup[1].PoNumber =  blank
                    PoNumber.PO222PoNumberGroup[2].PoNumber =  blank
                    PoNumber.PO222PoNumberGroup[3].PoNumber =  blank
                    PoNumber.PO222PoNumberGroup[4].PoNumber =  blank
                    PoNumber.PO222PoNumberGroup[5].PoNumber =  blank
                    PoNumber.PO222PoNumberGroup[6].PoNumber =  blank
        visible when (MainSelection.POCreateDate)
            paragraph
                FrPoCreateDate
                    label is "FromP\\OCreateDate"
                ToPoCreateDate
                    label is "ToP\\OCreateDate"
        visible when (MainSelection.DeliveryDate)
            paragraph
                FrEarlyDlDate
                    label is "FromDeliveryDate"
                ToEarlyDlDate
                    label is "ToDeliveryDate"
        visible when (MainSelection.PONumber)
            two column
                PoNumber.PO222PoNumberGroup[1].PoNumber
                    label is "P\\ONumber"
                PoNumber.PO222PoNumberGroup[2].PoNumber
                    no label
            two column
                PoNumber.PO222PoNumberGroup[3].PoNumber
                    no label
                PoNumber.PO222PoNumberGroup[4].PoNumber
                    no label
            two column
                PoNumber.PO222PoNumberGroup[5].PoNumber
                    no label
                PoNumber.PO222PoNumberGroup[6].PoNumber
                    no label
        visible when (not MainSelection.PONumber)
            single column
                SelStatus
                    label is "Status"
        single column
            SummOrDet
                label is "ReportOption"
        header2 of "DimensionFilters"
        single column
            AcctUnitSelect
                label is "DimensionSelection"
        visible when (not AcctUnitSelect.IncludeAllAccountUnits)
            single column
                Dimension1
                    label is "Dimension"
                    select is StructureRowDimensionSelectList
            paragraph
                AcctUnit.AcctUnit[1]
                    no label
                AcctUnit.AcctUnit[2]
                    no label
            paragraph
                AcctUnit.AcctUnit[3]
                    no label
                AcctUnit.AcctUnit[4]
                    no label
            paragraph
                AcctUnit.AcctUnit[5]
                    no label
                AcctUnit.AcctUnit[6]
                    no label
            paragraph
                AcctUnit.AcctUnit[7]
                    no label
                AcctUnit.AcctUnit[8]
                    no label
        single column
            AcctSelect
                label is "DimensionSelection"
        visible when (not AcctSelect.IncludeAllAccounts)
            single column
                Dimension2
                    label is "Dimension"
                    select is StructureRowDimensionSelectList
            paragraph
                Account.Account[1]
                    no label
                Account.Account[2]
                    no label
            paragraph
                Account.Account[3]
                    no label
                Account.Account[4]
                    no label
            paragraph
                Account.Account[5]
                    no label
                Account.Account[6]
                    no label
            paragraph
                Account.Account[7]
                    no label
                Account.Account[8]
                    no label
        single column
            ActivitySelect
                label is "DimensionSelection"
        visible when (not ActivitySelect.IncludeAllProjects)
            single column
                Dimension3
                    label is "Dimension"
                    select is StructureRowDimensionSelectList
            paragraph
                Activity.Activity[1]
                    no label
                Activity.Activity[2]
                    no label
            paragraph
                Activity.Activity[3]
                    no label
                Activity.Activity[4]
                    no label
            paragraph
                Activity.Activity[5]
                    no label
                Activity.Activity[6]
                    no label
            paragraph
                Activity.Activity[7]
                    no label
                Activity.Activity[8]
                    no label
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                RemainingPOBalanceReportReport_RDG
            column2 of 25%
                RemainingPOBalanceReportReport_XPT
