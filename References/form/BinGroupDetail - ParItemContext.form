ParItemContext is a Form
    Layout
        three column distributed
            column1
                visible when (not BinGroupDetailExists)
                    paragraph
                        Company
                        Company.Name
                            no label
                            display as text
                    paragraph
                        TransientItem
                            show up to 10 characters
                        TransientItem.Description
                            no label
                            display as text
                visible when (BinGroupDetailExists)
                    display as text
                        Company.DerivedCompanyDisplay
                            label is "Company"
                        TransientItem.RepresentativeText
                visible when (false)
                    TransientOnline
                    TransientVendor
                    TransientPurchaseFromLocation
                    TransientReplenishFrom
            column2
                visible when (not BinGroupDetailExists)
                    InventoryLocation
                        label is "Location"
                    InventoryLocation.Name
                        no label
                        display as text
                visible when (BinGroupDetailExists)
                    InventoryLocation.DerivedInventoryLocationIDName
                        label is "Location"
                        display as text
                InventoryLocation.LocationType
                    display as text
            column3
                InventoryLocation.OneSourceDocumentToOnePO
                    label is "SingleDocumentToAPurchaseOrder"
                    display as text
                InventoryLocation.Status
                    display as tag
                        color of gray when (InventoryLocation.Status.AddInactive)
                        color of green when (InventoryLocation.Status.Active)
                        color of red when (InventoryLocation.Status.Inactive)
