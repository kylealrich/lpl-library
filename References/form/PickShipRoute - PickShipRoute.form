PickShipRoute is a Form
    is primary
    title is "DeliveryRoute"
    Layout
        single column
            paragraph
                Company
                Company.Name
                    no label
                    display as text
        two column distributed
            paragraph
                InventoryLocation
                    label is "Location"
                    show up to 16 characters
                InventoryLocation.Name
                    no label
                    display as text
            paragraph
                PickShipRoute.DayOfWeek
                    label is "DayOfWeek"
                    display as required
        two column distributed
            paragraph
                PickShipRoute.Route
                    label is "Route"
                    display as required
            paragraph
                PickShipRoute.Stop
                    label is "Stop"
                    display as required
        two column distributed
            paragraph
                Customer
                    select is ArcompRel.CustomerGroupField.CustomerGroup.Customer set.CustomerContextCompanySelectList
                Customer.Name
                    no label
                    display as text
            paragraph
                CustomerShipTo
                CustomerShipTo.Name
                    no label
                    display as text
