FinanceChargeMaintenance is a Form
    use for action Update
    title is "ContractChargeDetailView"
    Layout
        three column distributed
            column1
                paragraph
                    BeginDate
                    Active
                EndDate
            column2
                TaxableFlag
                    label is "Taxable"
                TaxCode
            column3
                Frequency
                ProcessLevel
        blank line
        visible when (FranchiseStandardCharge.ChargeType.Special)
            three column distributed
                column1
                    InitializeSpecialCharges
                column2
                    PaymentAmount
                        label is "Amount"
                column3
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            header2 of "SalesTypeChargeDetail"
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            three column distributed
                column1
                    PercentOfSales
                    BaseAmount
                column2
                    MinimumAmount
                    MaximumAmount
                column3
            blank line
        visible when (FranchiseStandardCharge.ChargeType.NoteBased)
            header3 of "NoteTypeChargeDetail"
        visible when (FranchiseStandardCharge.ChargeType.NoteBased)
            three column distributed
                column1
                    NumberOfPayments
                        label is "Number_ofPayments"
                    RemainingPayments
                    PaymentAmount
                column2
                    NoteAmount
                    InterestRate
                    BalanceFlag
                        label is "BalancePrint"
                        show up to 20 characters
                column3
                    CurrentBalance
                    ChargeToDate
                    button of "Prepayments"
                        visible when (FranchiseStandardCharge.ChargeType.NoteBased)
                        action is CreateChargePrepayment
        blank line
        header3 of "Accounts"
        single column
            RevenueAccount
                label is "Revenue"
                compact format
            AccrualAccount
                label is "Accrual"
                compact format
            AccrualOffsetAccount
                label is "AccrualOffset"
                compact format
        visible when (FranchiseStandardCharge.ChargeType.NoteBased)
            single column
                NoteAssetAccount
                    label is "NoteAsset"
                    compact format
                NoteAccrual
                    label is "NoteAccrual"
                    compact format
                NoteAccrualOffsetAccount
                    label is "NoteAccrualOffset"
                    compact format
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            blank line
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            header3 of "SlidingScale"
            two column independent
                column1
                    paragraph
                        BaseAmount
                            display as text
                    blank line
                column2
                    paragraph
                        StepOperand
                            label is "ScaleOption"
                    blank line
        visible when (FranchiseStandardCharge.ChargeType.SalesBased)
            seven column table
                column1
                    paragraph
                        text of "Sequence"
                    blank line
                    paragraph
                        text of "1"
                    paragraph
                        text of "3"
                    paragraph
                        text of "5"
                    paragraph
                        text of "7"
                    paragraph
                        text of "9"
                column2
                    paragraph
                        text of "Upper_\\Limit"
                    blank line
                    paragraph
                        StepLimits.StepLimit[1]
                    paragraph
                        StepLimits.StepLimit[3]
                    paragraph
                        StepLimits.StepLimit[5]
                    paragraph
                        StepLimits.StepLimit[7]
                    paragraph
                        StepLimits.StepLimit[9]
                column3
                    paragraph
                        text of "Charge_\\Percent"
                    blank line
                    paragraph
                        StepPercents.StepPercent[1]
                    paragraph
                        StepPercents.StepPercent[3]
                    paragraph
                        StepPercents.StepPercent[5]
                    paragraph
                        StepPercents.StepPercent[7]
                    paragraph
                        StepPercents.StepPercent[9]
                column4
                    paragraph
                        text of "_________________"
                column5
                    paragraph
                        text of "Sequence"
                    blank line
                    paragraph
                        text of "2"
                    paragraph
                        text of "4"
                    paragraph
                        text of "6"
                    paragraph
                        text of "8"
                    paragraph
                        text of "10"
                column6
                    paragraph
                        text of "Upper_\\Limit"
                    blank line
                    paragraph
                        StepLimits.StepLimit[2]
                    paragraph
                        StepLimits.StepLimit[4]
                    paragraph
                        StepLimits.StepLimit[6]
                    paragraph
                        StepLimits.StepLimit[8]
                    paragraph
                        StepLimits.StepLimit[10]
                column7
                    paragraph
                        text of "Charge_\\Percent"
                    blank line
                    paragraph
                        StepPercents.StepPercent[2]
                    paragraph
                        StepPercents.StepPercent[4]
                    paragraph
                        StepPercents.StepPercent[6]
                    paragraph
                        StepPercents.StepPercent[8]
                    paragraph
                        StepPercents.StepPercent[10]
