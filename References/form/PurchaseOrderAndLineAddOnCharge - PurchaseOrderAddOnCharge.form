PurchaseOrderAddOnCharge is a Form
    is primary
    use for action CreatePurchaseOrderAddOnCharge
    title is "PurchaseOrderAddOnCharge"
    Layout
        header2 of "PurchaseOrderInformation"
        display as text
            three column distributed
                column1
                    Company.DerivedCompanyNameID
                        label is "Company"
                    paragraph
                        PurchaseOrder
                        PurchaseOrder.PurchaseOrderRevision
                            label is "Revision"
                        PurchaseOrderLine.LineNumber
                            label is "LineNumber"
                    paragraph
                        PurchaseOrder.PurchaseFromLocation.DerivedPurchasedFromLocation
                            label is "PurchaseFrom"
                    PurchaseOrder.Reference1
                column2
                    PurchaseOrder.Buyer.DisplayBuyerName
                        label is "Buyer"
                    PurchaseOrder.Vendor.DerivedVendorNameID
                    PurchaseOrder.ShipToLocation.DisplayLocation
                        label is "ShipTo"
                    PurchaseOrder.Reference2
                column3
                    PurchaseOrder.PurchaseOrderDate
                    paragraph
                        PurchaseOrder.DefaultDeliveryDate
                            label is "DeliveryDate"
                    PurchaseOrder.TotalWithCurrencyDisplay
                        label is "PurchaseOrderTotal"
                    paragraph
                        PurchaseOrder.DerivedPurchaseOrderStatus
                            label is "POStatus"
        header2 of "AddOnCharge"
        two column distributed
            paragraph
                AddOnCharge
                    select is MiscellaneousAddOnCharges
                AddOnCharge.Description
                    no label
                    display as text
            AddOnChargeEntryMethod
        two column distributed
            column1
                paragraph
                    AddOnCharge.LandedAddOnCharge
                        label is "Landed"
                    Summarize
                        display as text
            column2
                paragraph
                    visible when (AddOnChargeEntryMethod.UnitCost)
                        TotalAddOnChargeAmount
                            label is "TotalAddOnCost"
                    visible when (AddOnChargeEntryMethod.TotalAmount)
                        ZeroCost
                        TotalAddOnChargeAmount
                            label is "TotalAddOnCost"
                    visible when (AddOnChargeEntryMethod.RatePercentage)
                        AddOnChargePercent
                            label is "Rate"
                        TotalAddOnChargeAmount
                            label is "TotalAddOnCost"
                            display as text
        two column distributed
            paragraph
                Vendor
                Vendor.VendorName
                    no label
                    display as text
            paragraph
                PurchaseFromLocation
                    label is "Location"
                PurchaseFromLocation.VendorName
                    no label
                    display as text
        two column distributed
            Currency
            EnteredCurrencyConversionRate
                label is "ExchangeRate"
        two column distributed
            PrintOnPO
                label is "PrintOnPurchaseOrder"
            FromRequisition
                display as text
        two column distributed
            paragraph
                Taxable
                visible when (Taxable)
                    TaxCode
                    visible when (HasInvoicedTax)
                        InvoicedTaxAmount
                            display as text
                    visible when (HasAccruedTax)
                        AccruedTaxAmount
                            display as text
            ProductTaxCategory
        paragraph
            TransientAssetInformation.AssetTemplate
                label is "Template"
            TransientAssetInformation.Asset
                label is "Asset"
        single column
            Account
                label is "Account"
                compact format
