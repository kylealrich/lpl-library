ContactMain is a Form
    is primary
    title is "SourcingEventContact"
    Layout
        display as text
            two column
                SourcingEvent.RepresentativeText
                visible when (ContactEntered)
                    SourcingEventContact
                    Contact
        header3 of "ContactDetails"
        visible when (ContactEntered)
            display as text
                single column
                    DerivedName
                    DerivedEmail
                    DerivedPhone
        visible when (not ContactEntered)
            paragraph
                Name.GivenName
                    label is "FirstName"
                Name.FamilyName
                    label is "LastName"
            single column
                Email
                Phone
        two column
            ContactType
            PrimaryContact
        two column
            visible when (EligibleForCM)
                PurchasingContact
                    label is "SendContactToContractManagement"
            SupplierCanView
        single column
            Address
