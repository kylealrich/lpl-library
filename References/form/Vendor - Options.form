Options is a Form
    Layout
        header2 of "Invoice"
        four column distributed
            MaximumInvoiceAmount
                label is "MaximumInvoiceAmount"
            PrimeRate
                label is "AnticipationRate"
            PaymentPriority
                label is "Priority"
            paragraph
                DerivedExcludedInvoiceTemplates
                    label is "ExcludedInvoiceTemplates"
                    display as text
                visible when (not HasCustomer)
                    button of "Edit"
                        action is ExcludeInvoiceTemplate
        four column distributed
            VendorRestrictions.RestrictedCompany
                label is "RestrictedCompany"
            VendorRestrictions.RestrictedProcessLevel
            VendorRestrictions.RestrictedCompanyGroup
            AllowDuplicateInvoiceByDate
        four column distributed
            AutomaticEmailingOfCreditMemo
                label is "AutomaticEmailing_ofCreditMemo"
            AutomaticEmailingOfDebitMemo
            ValidateDiversityDates
                label is "ValidateDiversityDates"
            ValidateCertificationDate
                label is "ValidateCertificationDate"
        four column distributed
            ValidateCertificationAmount
                label is "ValidateCertificationAmount"
            RequireRemitTo
                label is "RequireRemitToLocation"
            RestrictToOneInvoice
            PreferredVendor
        four column distributed
            ExcludeInvoiceLineImport
        header2 of "Payment"
        two column distributed
            column1
                paragraph
                    TermsCode
                        label is "PaymentTerms"
                    TermsCode.Desc1
                        no label
                        display as text
                paragraph
                    CashCode
                    CashCode.Description
                        no label
                        display as text
                paragraph
                    DiscountCode
                    DiscountCode.Description
                        no label
                        display as text
                paragraph
                    PayImmediately
                        label is "PayImmediately"
                    Enclosure
                        label is "Enclosure"
            column2
                InvoiceGroup
                paragraph
                    BankTransactionCode
                    BankTransactionCode.Description
                        no label
                        display as text
                paragraph
                    PayablesProcessGroup
                    PayablesProcessGroup.Description
                        no label
                        display as text
                paragraph
                    SeparatePayment
                        label is "SeparatePayment"
        header2 of "Codes"
        two column distributed
            column1
                paragraph
                    AuthorityCode
                    AuthorityCode.Description
                        no label
                        display as text
                paragraph
                    DistributionCode
                    DistributionCode.Description
                        no label
                        display as text
                paragraph
                    AccrualCode
                    AccrualCode.Description
                        no label
                        display as text
                paragraph
                    RetainageAccrualCode
                    RetainageAccrualCode.Description
                        no label
                        display as text
                paragraph
                    ForeignEconomicRegulatoryCode
                    ForeignEconomicRegulatoryCode.Description
                        no label
                        display as text
            column2
                paragraph
                    TaxCode
                        select is TaxCodeFilteredList
                    TaxCode.Description
                        no label
                        display as text
                paragraph
                    TaxUsageCode
                    TaxUsageCode.Description
                        no label
                        display as text
                paragraph
                    DefaultTaxIndicator
                        label is "TaxIndicator"
                paragraph
                    Project
                    Project.Project.Description
                        no label
                        display as text
                paragraph
                    InvoiceRoutingCategory
                        show up to 24 characters
                    InvoiceRoutingCategory.Description
                        no label
                        display as text
                paragraph
                    visible when (not ValidateDiversityDates)
                        DiversityCode
                            label is "DefaultDiversityCode"
                        DerivedDiveristyDescription
                            no label
                            display as text
                    visible when (ValidateDiversityDates)
                        DiversityCode
                            label is "DefaultDiversityCode"
                            display as text
                        DerivedDiveristyDescription
                            no label
                            display as text
                        visible when (DiversityCode entered)
                            button of "ChangeDiversityCode"
                                link is DefaultDiversityCodes
                                display as link
                        visible when (DiversityCode not entered)
                            button of "SetDefaultDiversityCode"
                                link is DefaultDiversityCodes
                                display as link
        header2 of "Match"
        two column distributed
            column1
                paragraph
                    MatchPrepayment
                        label is "MatchPrepayment"
                    MatchPrepaymentMethod
                        display as required when (MatchPrepayment)
                paragraph
                    CreatePOD
                        label is "ProofOfDelivery"
                    HoldUntilInspected
                PoolOption
                RequirePurchaseOrder
                paragraph
                    MatchTable
                    MatchTable.Description
                        no label
                        display as text
                paragraph
                    RuleGroup
                    RuleGroup.Description
                        no label
                        display as text
            column2
                paragraph
                    ChargebackMinimumAmount
                        label is "AutoChargebackMinimum"
                    paragraph
                        AutomaticChargebackHoldCode
                            label is "AutoChargebackHold"
                        AutomaticChargebackHoldCode.Description
                            no label
                            display as text
                TermsCalculation
                paragraph
                    AllowZeroCostInvoice
                paragraph
                    FloatDays
                    ApplyFloatDaysToDueDate
                paragraph
                    RequireMatchReference
                        label is "RequireMatchReference"
                            left of field
                paragraph
                    CostComponentMatch
                        label is "CostComponentMatch"
                        mouse over text is "PerformToleranceCheckOnAddOnChargesDuringMatch"
                paragraph
                    BypassInvoiceOnlyAOC
                        label is "BypassInvoiceOnlyAddOnCharges"
                        mouse over text is "DoNotPerformToleranceCheckForInvoiceOnlyAddOnCharges"
        two column distributed
            column1
                header2 of "Returns"
                paragraph
                    ReplaceGoods
                        label is "ReplaceGoods"
                    ShipOrHold
                        label is "ShipOrHoldGoods"
                paragraph
                    WriteOffAmount
                        label is "MinimumClaimAmount"
                    paragraph
                        VendorClaimType
                        visible when (VendorClaimType.Chargeback)
                            paragraph
                                VendorClaimHoldCode
                                    label is "VendorClaimsChargebackHold"
            column2
                header2 of "Miscellaneous"
                LanguageCode
                    label is "Locale"
                    compact format
                paragraph
                    CreateDate
                        display as text
                    CaseNumber
        two column distributed
            column1
                header2 of "ProcurementCard"
                paragraph
                    UseProcurementCard
                        label is "UseProcurementCard"
                    visible when (UseProcurementCard)
                        MaskedProcurementCard
                            display as text
                        button of "Add_\\/UpdateProcurementCard"
                            action is UpdateProcurementCard
                            display as link
                paragraph
                    visible when (HasProcurementCard)
                        visible when (not UseProcurementCard)
                            text of "<ProcurementCardUncheckMessage>"
                                bold
                                color of red
            column2
                header2 of "E\\D\\I"
                paragraph
                    EDINumber
                    EDIAutoRelease
                        label is "E\\D\\IInvoiceAutomaticRelease"
                    paragraph
                        ERSCapable
                            label is "ERSCapable"
                        visible when (ERSCapable)
                            InvoiceReference
                                label is "E\\R\\SInvoiceReference"
                                display as required when (ERSCapable)
        two column distributed
            column1
                header2 of "ExpenseManagement"
                paragraph
                    ExpenseDefault
                        compact format
            column2
                header2 of "Global"
                paragraph
                    ExternalAccountingEntity
                    ExternalLocation
