ProjectMilestoneCommentForm is a Form
    is primary
    title is "ProjectMilestoneComment"
    Layout
        three column
            column1
                ProjectContract.DisplayContract
                    label is "<FinanceEnterpriseGroup.ProjectLabel>_Contract"
                    display as text
                FinanceDimension2
                    label is "<FinanceEnterpriseGroup.FinanceDimension2Label>"
                    display as text
                ProjectContractMilestone.MilestoneType
                    display as text
            column2
                ProjectContract.Project.Description
                    no label
                    display as text
                FinanceDimension2.Description
                    no label
                    display as text
                ProjectContractMilestone.Description
                    no label
                    display as text
            column3
        single column
            Subject
            Comment
                use text area of 3 lines
        four column
            column1
                From
            column2
                visible when (HasComment)
                    CommentDate
                        display as text
            column3
                DocumentURL
            column4
                paragraph
                    Attachment.File
                        label is "Attachment"
                    visible when (HasAttachment)
                        button of "View"
                            view Attachment.File
                            display as link
