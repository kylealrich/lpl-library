StudentActivityAccountContextForm is a Form
    title is "<mode>ActivityAccount"
    Layout
        three column table
            column1
                paragraph
                    StudentActivityDistrict
                        label is "SchoolDistrict"
                        display as text
                paragraph
                    ActivityLevel
                paragraph
                    StudentActivityAccount
                        label is "Activity"
                visible when (ActivityLevel.Detail)
                    paragraph
                        ParentStudentActivityAccount
                            label is "ParentAccount"
                            select is StudentActivityGroupSelectList
            column2
                paragraph
                    StudentActivityDistrict.Name
                        no label
                        display as text
                paragraph
                    StudentActivityType
                        label is "ActivityType"
                paragraph
                    Description
                visible when (ActivityLevel.Detail)
                    paragraph
                        ParentStudentActivityAccount.Description
                            no label
                            display as text
            column3
                blank line
                visible when (ActivityRecordExists)
                    visible when (ActivityLevel.Detail)
                        button of "PeriodTransactionDetails"
                            link is MultiPeriodTransactionDetails
                Active
                    align as label
                visible when (ActivityLevel.Detail)
                    visible when (not StudentActivityType.Asset)
                        FeeAmount
        visible when (ActivityLevel.Detail)
            paragraph
                GLAccount
                    compact format
        header3 of "CurrentBalances"
        paragraph
            DerivedLatestClosePeriodEndingBalance
                label is "LastPeriodEndingBalance"
            DerivedCurrentBalance
                label is "CurrentBalance"
            visible when (HasTransactionDetails)
                button of "CurrentTransactionDetails"
                    link is CurrentTransactionDetails
                    align as label
        paragraph
            DerivedCurrentReceipts
                label is "Receipts"
                display only
            DerivedCurrentDisbursements
                label is "Disbursements"
                display only
            DerivedCurrentTransfers
                label is "Transfers"
                display only
