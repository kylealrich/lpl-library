SETermAndConditionAttachmentForm is a Form
    is primary
    title is "SourcingEventTermAndConditionAttachment"
    Layout
        single column
            SourcingEventTermAndConditionAttachment
                label is "AttachmentNumber"
                display as text
        paragraph
            visible when (HasAttachment)
                Attachment.Title
            Attachment.File
                label is "Attachment"
            visible when (HasAttachment)
                button of "View"
                    view Attachment.File
                    display as link
        single column
            AttachmentReference
            DisplayOrder
                display as text
