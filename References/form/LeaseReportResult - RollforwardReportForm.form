RollforwardReportForm is an ActionForm
    action is CreateRollforwardReport
    title is "RollforwardReport"
    Layout
        TypeOfReport
            label is "TypeOfReport"
            display as text
        Description
            label is "ReportDescription"
            display as required when (true)
        UseCompanyGroup
            label is "SelectCompanyOrCompanyGroup"
            display as horizontal radio buttons
        visible when (UseCompanyGroup.Company)
            PayablesCompany
                label is "Company"
                display as required when (true)
        visible when (UseCompanyGroup.CompanyGroup)
            CompanyGroup
                label is "CompanyGroup"
                display as required when (true)
        RollforwardReportType
            label is "ReportType"
        paragraph
            ReportDate.Begin
                label is "FromDate"
                display as required when (true)
            ReportDate.End
                label is "ToDate"
                display as required when (true)
