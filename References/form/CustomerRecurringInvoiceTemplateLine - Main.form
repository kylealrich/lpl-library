Main is a Form
    title is "<CustomerRecurringInvoiceTemplate.ReceivableInvoiceType>_<RecurringInvoiceTemplate>_Line_<FormTitleLineNumber>"
    Layout
        four column distributed
            column1
                Item
                    label is "Item"
                    select is ReceivableItemsSelectList
                    show up to 15 characters
                    raise blue alert when (Special)
                        mouse over text is "LineTypeIs_\\Special"
                    when value changed
                        refresh DistributionCategoryRequired
            column2
                Quantity
                    label is "Quantity"
            column3
                UnitPrice
                    label is "UnitPrice"
                    display as required when (true)
            column4
                UnitOfMeasure
                    label is "UnitOfMeasure"
                    select is ReceivableUnitsOfMeasureSelectList
        four column distributed
            column1
                Description
                    label is "Description"
                    display as required when (true)
                DistributionCategory
                    label is "DistributionCategory"
                    display as required when (DistributionCategoryRequired)
            column2
                StartDate
            column3
                StopDate
            column4
                GlobalLineType
                    label is "LineType"
        header2 of "Tax"
        four column distributed
            column1
                paragraph
                    Taxable
                        label is "Taxable"
                    TaxCode
                        label is "TaxCode"
                        show up to 10 characters
            column2
                ProductTaxCategory
            column3
                TaxUsageCode
            column4
                visible when (IsHSNSACCodeEnabled)
                    HSNSACCode
                visible when (not IsHSNSACCodeEnabled)
                    UNSPSCCode
                        compact format
        header2 of "Project"
        four column distributed
            column1
                FinanceDimension2
            column2
                ProjectContract
            column3
                Project
        visible when (Company.DetailedInvoiceAccrualDistributions)
            header2 of "DetailFinanceStructure"
            InvoiceFinanceCodeBlock
                label is "InvoiceAccrualAccount"
                compact format
