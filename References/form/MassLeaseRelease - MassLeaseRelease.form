MassLeaseRelease is an ActionForm
    action is MassLeaseRelease
    Layout
        single column
            LeaseCompanyGroup
                no label
                display as horizontal radio buttons
        visible when (LeaseCompanyGroup.Lease)
            paragraph
                LseCompany
                    label is "Company"
                    select is PayablesCompanyList
                LseCompany.Name
                    no label
                    display as text
            paragraph
                LseLease
                    label is "Lease"
                    select is AllLeases
                    show up to 20 characters
                LseLease.Description
                    no label
                    display as text
        visible when (LeaseCompanyGroup.CompanyGroup)
            paragraph
                GcgCompanyGroup
                    label is "CompanyGroup"
                    select is CompanyGroupsInFinanceEnterpriseGroup
                GcgCompanyGroup.Description
                    no label
                    display as text
        paragraph
            LseLeaseClass
                label is "LeaseClassification"
            LseLeaseType
                label is "LeaseType"
                select is LeaseTypes
            LseLeaseType.Description
                no label
                display as text
        single column
            ReleaseOption
        header2 of untranslatable:"Report Distribution"
        two column distributed
            column1 of 40%
                MassLeaseReleaseReport_RDG
            column2 of 25%
                MassLeaseReleaseReport_XPT
