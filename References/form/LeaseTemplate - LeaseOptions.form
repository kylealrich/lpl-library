LeaseOptions is a Form
    Layout
        four column distributed
            column1
                paragraph
                    Lessor
                    Lessor.VendorName
                        no label
                        display as text
                LeaseCategory
                paragraph
                    LeaseType
                    LeaseType.Description
                        no label
                        display as text
                Project
                    label is "Project"
            column2
                PaymentTiming
                Currency
                NumberOfAssets
            column3
                InterestRate
                    label is "LesseeDiscountRate"
                ImplicitInterestRate
                BargainPurchaseAmount.TransactionAmount
                    label is "BargainPurchaseAmount"
            column4
                Ownership
                ExercisePurchase
                SpecializedAsset
        header2 of "Land_andBuilding"
        three column
            column1
                paragraph
                    LandAndBuilding
            column2
                visible when (LandAndBuilding.LandAndBuildingLease)
                    LandValue.TransactionAmount
                        label is "LandValue"
                visible when (LandAndBuilding.LandOnly)
                    LandValue.TransactionAmount
                        label is "LandValue"
            column3
                visible when (LandAndBuilding.LandAndBuildingLease)
                    BuildingValue.TransactionAmount
                        label is "BuildingValue"
