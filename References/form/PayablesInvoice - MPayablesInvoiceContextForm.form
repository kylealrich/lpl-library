MPayablesInvoiceContextForm is a Form
    title is "Invoice"
    Layout
        single column
            first PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
                no label
                display as full image up to 5 lines
                    missing image is missingInvoiceUX3
            visible when (InApprovalProcess)
                RoutingCode
                    display as text
            Status
                display as text
                raise red alert when (DisplayErrorWarning)
                    mouse over text is "Errors_\\Exist_-_\\See_'\\Errors'_tabForDetails"
        two column distributed
            column1
                display as text
                    visible when (VoucherNumberEntered)
                        VoucherNumberDisplay
                    visible when (ProcessingTeamEntered)
                        paragraph
                            ProcessingTeam
                            ProcessingTeam.Description
                                no label
                    visible when (not ProcessingTeamEntered)
                        APClerk.PreferredSimplePresentationName
                            label is "Processor"
                    visible when (DisplayResponsiblePerson)
                        ResponsiblePerson.PreferredSimplePresentationName
                            label is "CurrentApprover"
                    button of "<ResponsibleTeam.Description>"
                        visible when (ResponsibleTeamEntered)
                        link is ApproversForTeam
                        label is "ApprovalTeam"
                        display as link
                    button of "<ResponsibleRole>"
                        visible when (DisplayResponsibleRole)
                        link is ApproversForRole
                        label is "CurrentApprovalRole"
                        display as link
            column2
                display as text
                    visible when (MatchProcessType.Expense)
                        InvoiceAmount.CurrencyAmount
                            label is "InvoiceAmount"
                        paragraph
                            DerivedTotalTaxAmountField
                            visible when (ExpenseTaxIsOutOfBalance)
                                TaxOutOfBalanceAmount
                                    label is "OutOfBalance"
                                        bold
                                        color of red
                    visible when (IsAPurchaseOrderInvoice)
                        MatchAmount
                            label is "Goods"
                        AddOnChargeAmount
                            label is "AddOnCharges"
        two column distributed
            column1
                display as text
                    visible when (IsAPurchaseOrderInvoice)
                        ServiceAmount
                            label is "Services"
                        DerivedMatchInvoiceTaxAmount
                        visible when (IsMatched)
                            DerivedMatchInvoiceAccruedTaxAmount
                        paragraph
                            DerivedTotalPaymentAmountField
                                label is "TotalPayments"
                            visible when (PaymentsAreOutOfBalance)
                                PaymentOutOfBalanceAmount
                                    label is "OutOfBalance"
                                        bold
                                        color of red
                display as text
                    visible when (MatchProcessType.Expense)
                        visible when (not InvoiceType.Prepayment)
                            visible when (not InvoiceType.PrepaymentCredit)
                                visible when (not IsChargeback)
                                    paragraph
                                        DerivedTotalDistributionAmountField
                                            label is "TotalDistributions"
                                        visible when (DistributionsAreOutOfBalance)
                                            DistributionOutOfBalanceAmount
                                                label is "OutOfBalance"
                                                    bold
                                                    color of red
            column2
                visible when (RecordExists)
                    visible when (IsOnHold)
                        text of "InvoiceHasPaymentsOnHold"
                            bold
                            color of red
                    visible when (DisplayCreateInProgress)
                        text of "<CreateDetailsProcessingInBackgroundMsg>"
                            bold
                            italics
                            color of red
                    visible when (DisplayMatchInProgress)
                        text of "<MatchProcessingInBackgroundMsg>"
                            bold
                            italics
                            color of red
                    visible when (DisplayMatchInProgressWithAsyncFailure)
                        text of "<MatchProcessingInBackgroundAsyncFailureMsg>"
                            bold
                            italics
                            color of red
                    visible when (DisplayTransientAutoMatchError)
                        text of "<TransientAutoMatchError>"
                            bold
                            italics
                            color of red
                    visible when (DisplayUnmatchInProgress)
                        text of "<UnmatchProcessingInBackgroundMsg>"
                            bold
                            italics
                            color of red
                    visible when (DisplayProcessingInBackground)
                        text of "<ProcessingInBackgroundMsg>"
                            bold
                            italics
                            color of red
                    visible when (DisplayDistCodeInProcess)
                        text of "DistributionCodeIsProcessingInBackground...PleaseContinue"
                            bold
                            italics
                            color of red
                    visible when (DisplayTaxPreProcessing)
                        text of "CheckingForTax...PleaseContinue"
                            bold
                            italics
                            color of red
                    visible when (DisplayTaxInProgress)
                        text of "TaxIsProcessingInBackground...PleaseContinue"
                            bold
                            italics
                            color of red
                    visible when (DisplaySabrixMessage)
                        text of "<DerivedSabrixMessage>"
                            bold
                            color of red
                    visible when (BudgetEditInProgress)
                        text of "BudgetEditsInProgress"
                            bold
                            color of red
                    visible when (BudgetEditFailure)
                        text of "BudgetsExceeded;CouldNotRelease;SeeBudgetErrorsTab"
                            bold
                            color of red
                    button of "GoToUpdatedRecurringInvoice"
                        visible when (DisplayReplacementInvoiceLink)
                        link is UpdatedRecurringInvoice
                    visible when (DisplayMatchUnsuccessful)
                        text of "LastMatchAttempt:<DerivedLastMatchMessage>"
                            bold
                            italics
                            color of red
