LineAwardInformation is a Form
    title is "LineAwardSummary"
    Layout
        two column
            SourcingEvent
                display as text
            SourcingEvent.Name
                label is "EventName"
                display as text
        two column
            SourcingEventLine
                label is "Line"
                display as text
            Name
                label is "LineName"
                display as text
        two column
            ItemNumber
                label is "Item"
                display as text
            paragraph
                ItemDescription
                    display as text
                ItemDescription2
                    display as text
        single column
            single column
                ItemDescription3
                    label is "LongItemDescription"
        two column
            CommodityCode
                label is "CommodityCode"
                display as text
                compact format
            CommodityCode.Description
                label is "CommodityCodeDescription"
                display as text
        two column
            Quantity
                display as text
            UOM.UnitOfMeasure
                display as text
        single column
            visible when (HasCancelledQuantity)
                CancelledQuantity
                    display as text
        blank line
        single column
            button of "LineAwardDetails"
                link is AwardAnalysis
