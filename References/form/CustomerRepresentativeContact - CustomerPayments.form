CustomerPayments is a CompositeForm
    title is "<DerivedPaymentsFormTitle>"
    disable field options
    called out actions only
    context form is ActivityContextForm
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action InactivateContact
    restrict action EmailToCustomerContacts
    restrict action CustomerUpdateRequest
    restrict action UpdateMyContactInformation
    restrict action InitializeReceivablePortalPaymentHeader
    restrict action SelectPaymentMethod
    restrict action UnwindDeclinedPaymentRequest
    restrict action SendEmailForExternalUserMigrationUsernameChange
    Actions
        action is refresh
            label is "_"
    NationalOpenPayments is a Panel
        title is "AllPayments"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountReceivablePaymentRel.PortalReceivablePaymentList
    NationalAppliedPayments is a Panel
        title is "ClosedPayments"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountReceivablePaymentRel.PortalReceivableAppliedPaymentsList
    NationalUnappliedPayments is a Panel
        title is "OpenPayments"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountReceivablePaymentRel.PortalReceivableOpenPaymentsList
    CustomerOpenPayments is a Panel
        title is "AllPayments"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivablePaymentRel.PortalReceivablePaymentList
    CustomerAppliedPayments is a Panel
        title is "ClosedPayments"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivablePaymentRel.PortalReceivableAppliedPaymentsList
    CustomerUnappliedPayments is a Panel
        title is "OpenPayments"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivablePaymentRel.PortalReceivableOpenPaymentsList
    CustomerPendingPayments is a Panel
        title is "PaymentsUnderProcessing"
        visible when (IsActiveInvoiceCustomerAndNotAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerReceivablePaymentRel.PortalReceivablePendingPaymentsList
    CustomerAllCompanyOpenPayments is a Panel
        title is "AllPayments"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerAllCompanyReceivablePaymentRel.PortalReceivablePaymentList
    CustomerAllCompanyAppliedPayments is a Panel
        title is "ClosedPayments"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerAllCompanyReceivablePaymentRel.PortalReceivableAppliedPaymentsList
    CustomerAllCompanyUnappliedPayments is a Panel
        title is "OpenPayments"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerAllCompanyReceivablePaymentRel.PortalReceivableOpenPaymentsList
    CustomerAllCompanyPendingPayments is a Panel
        title is "PaymentsUnderProcessing"
        visible when (IsActiveInvoiceCustomerAndAllowPortalApplyCashAcrossReceivableCompanies)
        list is InvoiceCustomerAllCompanyReceivablePaymentRel.PortalReceivablePendingPaymentsList
    CustomerAllCompanyPendingPaymentsForNationalAccount is a Panel
        title is "PaymentsUnderProcessing"
        visible when (IsActiveNationalAccountParent)
        list is NationalAccountReceivablePaymentRel.PortalReceivablePendingPaymentsList
