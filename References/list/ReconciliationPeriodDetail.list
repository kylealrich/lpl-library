AllReconciliationPeriodDetailList is a List
    title is "ReconcilingItems"
    suppress sub-totals
    no data message is "No_Reconciling_Items_to_View"
        icon is icon.icon-empty-no-tasks
    Display Fields
        ReconciliationAccount.ReconciliationGroup
            raise blue alert when (ReconciliationAccount.GroupWithChildren)
                mouse over text is "AccountsAreAttachedTo<ReconciliationAccount.ReconciliationGroup>"
            column visible when (ReconciliationAccountStructurePeriod.HasPeriodReconciliationGroups)
        ReconciliationAccount.ReconciliationCodeBlock
            label is "ReconciliationAccount"
        ReconciliationAccount.ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
            label is "AccountDescription"
        ReferenceNumber
        Description
        PeriodAmount
            raise red alert when (ReconcilingItemAlert)
                mouse over text is "ReconcilingItemAmountExceeds<ReconciliationManagementGroup.ReconcilingItemAlertAmount>"
            total
        DerivedReconciliationPeriodDetailCount
            label is "PeriodsUsed"
            link is PeriodsUsedNavigation
    restrict action CreateReconcilingItem
    restrict action CreatePeriodDetail
    restrict action Create
    restrict action Delete
