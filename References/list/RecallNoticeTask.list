AllOpenRecallNoticeTasks is a List
    title is "OpenTasks"
    no data message is "There_Are_No_Open_Tasks"
        icon is icon.icon-empty-no-tasks
    Display Fields
        RecallGroup
            raise blue alert when (TaskCanBeAccepted)
                mouse over text is "MustAcceptTaskBeforeResponseCanBeProcessed"
        RecallNotice
            link is RecallNoticeNav
            sort order is primary
        RecallNotice.WorkingId
        RecallNotice.Name
        Owner
        Priority
            raise red alert when (IsHighPriority)
                mouse over text is "HighPriority"
            sort order is ByPriority
        DueDate
            raise red alert when (IsPastDue)
                mouse over text is "TaskIsPastDue"
            sort order is ByDueDate
                is default
        Status
            sort order is ByStatus
        button of icon.link
            link is TransactionDetails
            label is "ViewDetails"
        button of icon.check
            visible when (ShowResolutions)
            link is Resolutions
            label is "Resolutions"
    Instance Selection
        where (AllOpen)
    form is ResponderUserSummaryComposite
    restrict action ReassignNewItemProposalReview
    restrict action MobileAskAQuestion
    Actions
        action is Accepted.CompleteTask
            hide when invalid
        action is New.AcceptTask
            action icon is approve
            hide when invalid
        action is ReassignTask
            hide when invalid
        navigation is Resolutions
            action icon is claim
            label is "Resolutions"
            hide when invalid
            valid when (ShowResolutions)
        action is save
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
