APClerkAmendedPayablesInvoiceList is a List
    title is "AmendedInvoices"
    initially display search
    no data message is "There_are_currently_no_amended_Invoices"
        icon is icon.icon-empty-no-tasks
        button of "CreateInvoice"
            action is Unreleased.CreateInvoice
    Display Fields
        Company
            show up to 8 characters
        Vendor
        Vendor.VendorName
            disable translation filtering
            show up to 20 characters
        Invoice
            link is MatchInvoiceInformation
            show up to 15 characters
            raise yellow alert when (HasOpenMatchInvoiceMessages)
                mouse over text is "OpenMatchMessagesExist"
            raise blue alert when (CommentsExist)
                mouse over text is "<DerivedMouseOverInvoiceComment>"
            sort order is ByVendorInvoice
        Suffix
        InvoiceAmount.CurrencyAmount
            label is "InvoiceAmount"
            show up to 12 characters
            sort order is ByInvoiceAmount
        InvoiceDate
            sort order is ByInvoiceDate
        DueDate
            raise red alert when (ShowRedDueDateAlert)
                mouse over text is "InvoiceIsPastDue"
            raise yellow alert when (ShowYellowDueDateAlert)
                mouse over text is "InvoiceIsDueWithin7Days"
            sort order is ByDueDate
                is default
        DerivedApprovedBy
            label is "ApprovedBy"
            show up to 18 characters
            allow derived field filter
        DerivedApprovalDate
            label is "ApprovalDate"
            allow derived field filter
        ProcessingTeam
        MatchNeeded
        ErrorsExists
            label is "Error"
            raise red alert when (ErrorsExists)
                mouse over text is "<DerivedFirstErrorMessage>"
        button of "ViewImage"
            visible when (InvoiceImageEntered)
            view first PayablesInvoiceDocumentInvoiceTypeRel.Attachment.File
            display as link
    Instance Selection
        where (IsValidForActorContext
        and   not InterfaceInProcess
        and   Status.Amended
        and   (CurrentActorIsAPClerk
            or    CurrentActorIsOnProcessingTeam))
    form is PayablesInvoiceForm
    restrict action CreateMatchReferenceInvoice
    restrict action SelectForARInterfacing
    restrict action UnSelectForARInterfacing
    restrict action BuildSmartReconciliationQueue
    restrict action BuildTextIndexSetAction
    restrict action CreateCompanyCustomer
    restrict action MassInvoiceRelease
    restrict action InvoiceHoldMassUpdate
    restrict action PrintChargebacksByBatchInIDM
    Actions
        action is Approved.Release
            hide when invalid
        action is AssignAPClerk
            hide when invalid
        action is ReassignAPClerk
            hide when invalid
        action is EmailInvoice
            hide when invalid
        action is Released.Cancel
            hide when invalid
        action is Unreleased.CreateInvoice
        action is Unreleased.CreateAndRelease
        action is open
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
