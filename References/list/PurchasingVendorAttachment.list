Attachments is a List
    is primary
    title is "Attachments"
    Display Fields
        PurchasingVendorAttachment
            label is "AttachmentNumber"
        CommentName
            allow update
        CommentText
            allow update
        Attachment.Title
            label is "AttachmentTitle"
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
