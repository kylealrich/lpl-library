AllSupplierDashboard is a List
    title is "Suppliers"
    single select
    keyword search field is SearchSupplier
        label is "SearchName,Address,Contact"
    search form is CardviewSupplierSearch
        use as filter
    card view is SupplierCardView
        row separator is horizontal rule
    Display Fields
    restrict action SupplierCreate
    restrict action SupplierUpdate
    restrict action MobileSupplierCreate
    restrict action SupplierCreateImport
    Detail Sections
        Main is a DashBoardView
            use 12 column grid
            Detail Sections
                BankInformation
                    valid when (HasBankInformation)
                    double width
                    form is BankInformationForm
                Contacts
                    list is SupplierSourceId set.ContactCardList
                Certifications
                    list is AllSupplierCertificationsRel.CertificationsCardList
                    overview navigation is Certifications
                DiversityCodes
                    list is SupplierDiversityResponse set.BuyerDiversityResponseUpdateCardList
                    overview navigation is DiversityCodeNav
                Questions
                    valid when (not UsesConditionalQuestions)
                    triple width
                    list is SupplierGroup.ActiveSupplierGroupQuestions.BuyerSupplierQuestionsCardList
                    overview navigation is SupplierAllQuestions
                SupplierQuestions
                    valid when (UsesConditionalQuestions)
                    triple width
                    list is ActiveSupplierQuestions.BuyerSupplierQuestionsCardList
                    overview navigation is SupplierAllQuestions
        Contracts
            valid when (HasContracts)
            list is SupplierContractRel.SupplierContracts
        PurchaseOrders
            valid when (HasPOsOrLines)
            list is OpenPurchaseOrdersRel.OpenPurchaseOrdersForAVendor
        PurchaseOrderLines
            valid when (HasPOsOrLines)
            list is OpenPurchaseOrderLinesRel.OpenPurchaseOrderLinesForAVendor
        Receipts
            valid when (HasReceipts)
            list is PurchaseOrderReceiptRel.ReleasedReceiptsForAVendor
        Returns
            visible when (HasReturns)
            list is VendorReturnRel.ReturnsForAVendor
        Invoices
            valid when (HasInvoicesOrChecks)
            list is NumberOfInvoicesRel.InvoicesForAVendor
        Payments
            valid when (HasInvoicesOrChecks)
            list is TotalNumberOfChecksRel.PaymentsForAVendor
        Items
            visible when (HasItems)
            list is NumberOfItemsRel.SupplierItemReplenishment
        Evaluations
            allow nested detail sections
            list is AllSupplierPerformanceEvaluationsRel.SupplierEvaluationsPrimaryList
