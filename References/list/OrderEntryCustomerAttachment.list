Attachments is a List
    is primary
    title is "Attachments"
    no data message is "No_Order_Entry_Customer_Attachments_Exist"
        description is "To_\\CreateA_\\Order_\\Entry_\\Customer_\\Attachment,ClickThe_'plus'_inTheTopRightOr_\\Create_\\Order_\\Entry_\\Customer_\\AttachmentBelow."
        icon is icon.icon-empty-no-data
        button of "CreateOrderEntryCustomerAttachment"
            action is Create
    Display Fields
        OrderEntryCustomerAttachment
            label is "AttachmentNumber"
        Attachment.Title
            label is "AttachmentTitle"
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
