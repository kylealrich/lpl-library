AccountPeriodReconciliationForCloseManagement is a List
    title is "AccountPeriodReconciliations"
    no data message is "No_Account_Period_Reconciliations_to_view"
        icon is icon.icon-empty-no-tasks
    Display Fields
        ReconciliationCodeBlock
            raise blue alert when (IsAccountWithinGroup)
                mouse over text is "AccountWithinReconciliationGroup<ParentPeriodEndReconciliation.ReconciliationGroup>"
        ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
        PeriodEndReconciliation.ReconciliationAccount.ReconciliationAccountType
        PeriodEndReconciliation.ReconciliationAccount.Priority
            raise red alert when (HighPriority)
        PeriodEndReconciliation.ReconciliationAccount.Risk
            raise red alert when (HighRisk)
        Status
            sort order is ByStatus
        group label is "Owner"
            FinanceTeam
                label is "Team"
            AssignedResource.TeamMember.SearchName
                label is "TeamMember"
    restrict action Open.Create
    restrict action Open.Update
    restrict action Open.Delete
    restrict action Open.StartReconciliationLate
    restrict action Open.StartReconciliation
    restrict action InProcess.Update
    restrict action InProcess.Delete
    restrict action InProcess.DeleteAmortizationDistributions
    restrict action InProcess.ReleaseDistributionsOtherRequiredFields
    restrict action InProcess.ReleaseDistributions
    restrict action InProcess.JournalizeDistributions
    restrict action InProcess.CompleteReconciliationLate
    restrict action InProcess.Complete
    restrict action PendingApproval.Resume
    restrict action Closed.RemoveFromAuditorView
    restrict action Closed.AddToAuditorView
    restrict action Closed.Reopen
    restrict action Reassign
    restrict action GlobalDelete
    restrict action LoadAndReconcile
    restrict action RestoreDetailTransactionReconciliation
    restrict action ExecuteAutoReconciliationPolicies
    restrict action UpdateReconciliationDetails
    restrict action CreateAmortizationDistributions
    restrict action ManualApprove
    restrict action ManualReject
    restrict action ManualApproveDistributions
    restrict action ManualRejectDistributions
    restrict action SwitchToCombinedListView
    restrict action SwitchToListOverListView
