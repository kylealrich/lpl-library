AllOpenPayablesInvoiceList is a List
    title is "OpenInvoices"
    Display Fields
        PayablesInvoiceTotal
        NumberOfInvoices
            label is "NumberOfPayablesInvoicesByDueDate"
        PositiveSumOfInvoices
            label is "PayableInvoicesAmountsByDueDate"
    Instance Selection
        where (IsValidForActorContext
        and   (PayablesInvoiceTotal = "1 to 7 Days"
            or    PayablesInvoiceTotal = "8 to 14 Days"
            or    PayablesInvoiceTotal = "15 to 21 Days"
            or    PayablesInvoiceTotal = "22 to 28 Days"
            or    PayablesInvoiceTotal = "Over 28 Days"))
    form is AllOpenPayablesInvoiceForm
    Charts
        PayableInvoicesByDueDate is a PieChart
            title is "OpenInvoices"
            chart list
            is default
            show legend
            show labels
            element name is "<PayablesInvoiceTotal><DerivedSumLabel>"
            element value is PositiveSumOfInvoices
                title is "OpenInvoices"
