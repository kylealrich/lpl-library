AllPartnersDashboard is a List
    title is "TradingPartners"
    single select
    keyword search field is EDITradingPartner
        label is "SearchPartners"
    search form is TradingPartnersSearchForm
        use as filter
    no data message is "No_E\\D\\I_Trading_Partners"
        icon is icon.icon-empty-no-users
        button of "AddTradingPartner"
            action is Create
    card view is EDITradingPartnerCardView
    Display Fields
    Detail Sections
        Main is a DashBoardView
            show 4 columns
            Detail Sections
                TradingPartnerInfo
                    title is "TradingPartnerInformation"
                    double width
                    form is TradingPartnerInfo
                    overview navigation is ViewTradingPartnerDetails
                        label is "ViewDetails"
                Comments
                    double width
                    list is EDITradingPartnerCommentRel.TPCommentListDashboard
                RelatedByTpid
                    title is "RelatedByTradingPartnerID"
                    visible when (RelatedByTpidExists)
                    double width
                    list is RelatedByTpidRel.RelatedTradingPartners
                RecentTransactions
                    title is "RecentTransactionHistory"
                    visible when (TransactionHistoryExists)
                    double width
                    list is EDITransactionHistoryRel.EDITradingPartnerTransactionDashboard
                    overview navigation is ViewArchive
                        label is "ViewArchive"
