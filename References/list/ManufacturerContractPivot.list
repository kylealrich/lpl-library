AllManufacturerContracts is a List
    title is "AllOpenManufacturerContracts"
    initially display search
    Display Fields
        ManufacturerContractPivot
            label is "Contract"
            link is ManufacturerContractInformation
            sort order is primary
        ContractRel.WorkingContractID
            label is "WorkingContract"
        ContractRel.Name
            label is "ContractName"
        ContractRel.Supplier
            label is "Supplier"
        ContractRel.Supplier.SupplierName
            label is "SupplierName"
        ContractRel.ContractType
            label is "Type"
        ContractRel.ContractClassification
            label is "Classification"
        ContractRel.ContractStatus
            label is "Status"
    Instance Selection
        where (not ContractRel.ContractTemplate
        and   not ContractRel.ContractStatus.Closed
        and   not ContractRel.MultiTierDistributorContract)
    open action is restricted
    Actions
        navigation is ManufacturerContractInformation
        action is search
            label is "_"
