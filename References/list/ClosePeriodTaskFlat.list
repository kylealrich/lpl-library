AllClosePeriodTasks is a List
    title is "AllTasksFor<ClosePeriodTaskFlat.SummaryPeriodTask.TaskName>_<ClosePeriod>"
    search form is ClosePeriodTaskFlatSearch
        use as filter
    Display Fields
        group label is "Task"
            TaskName
                label is "Name"
                raise red alert when (ClosePeriodTaskFlat.DetailPeriodTask.OneTimeTask)
                    mouse over text is "OneTimeTask"
                sort order is ByTaskName
            ParentTask.TaskName
                label is "Parent"
                show up to 20 characters
        group label is "Ownership"
            FinanceTeam
                label is "Team"
                show up to 15 characters
                sort order is ByTeam
            TaskOwner.TeamMember.Employee.PresentationNameSnapshot
                label is "Resource"
                show up to 15 characters
                sort order is ByOwner
        group label is "Start"
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.BeginDate
                label is "Scheduled"
            ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.BeginDate
                label is "Actual"
                raise red alert when (StartedLate)
                    mouse over text is "StartedLate"
                raise yellow alert when (ClosePeriodTaskFlat.DetailPeriodTask.StartMetric.StartedEarly)
                    mouse over text is "StartedEarly"
        group label is "Completed"
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.DueDate
                label is "Scheduled"
                raise yellow alert when (TaskInJeopardy)
                    mouse over text is "InJeopardy:EstimatedDueDateIs<ClosePeriodTaskFlat.DetailPeriodTask.EstimateForTask.DueDate>"
                sort order is ByDueTimeStamp
            ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.DueDate
                label is "Actual"
                raise red alert when (ClosePeriodTaskFlat.DetailPeriodTask.CompletedLate)
                    mouse over text is "CompletedLate"
                raise yellow alert when (ClosePeriodTaskFlat.DetailPeriodTask.DueMetric.CompletedEarly)
                    mouse over text is "CompletedEarly"
        group label is "Effort"
            ClosePeriodTaskFlat.DetailPeriodTask.ScheduleForTask.LevelOfEffort
                label is "Scheduled"
            ClosePeriodTaskFlat.DetailPeriodTask.ActualForTask.LevelOfEffort
                label is "Actual"
    open action is restricted
    Actions
        navigation is DisplayTask
            label is "View"
        action is SendMessage
            hide when invalid
        action is search
            label is "_"
