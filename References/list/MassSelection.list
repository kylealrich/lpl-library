CardWithDetailSections is a List
    title is "SelectionGroups"
    single select
    keyword search field is MassSelectionType
        label is "Type"
        always display
    card view is BatchCard
        row separator is horizontal rule
    Display Fields
    Instance Selection
        where (IsValidForActorContext)
    Detail Sections
        show single panel tab
        Summary
            form is Summary
        AssetAdjustment
            title is "Adjustments"
            visible when (ShowMassSelectionAdjustment)
            list is MassSelectionDetailsRel.MassAdjustmentSelections
                helper list is AssetsForAdjustmentRel.AssetsForSelectionHelper
                    action is IncludeInMassSelection
        AssetAdjustmentAll
            title is "AssetAdjustment"
            visible when (ShowMassSelectAllAdjustment)
            list is AssetsForAdjustmentRel.AssetsForSelection
        AssetDisposal
            visible when (ShowMassSelectionDisposal)
            list is MassSelectionDetailsRel.MassDisposalSelections
                helper list is AssetsForDisposalRel.AssetsForSelectionHelper
                    action is IncludeInMassSelection
        AssetDisposalAll
            title is "AssetDisposal"
            visible when (ShowMassSelectAllDisposal)
            list is AssetsForDisposalRel.AssetsForSelection
        AssetTransfer
            visible when (ShowMassSelectionTransfer)
            list is MassSelectionDetailsRel.MassTransferSelections
                helper list is AssetsForTransferRel.AssetsForSelectionHelper
                    action is IncludeInMassSelection
        AssetTransferAll
            title is "AssetTransfer"
            visible when (ShowMassSelectAllTransfer)
            list is AssetsForTransferRel.AssetsForSelection
        AssetRevalue
            visible when (ShowMassSelectionRevalue)
            list is MassSelectionDetailsRel.MassRevalueSelections
                helper list is AssetsForRevalueRel.AssetsForSelectionHelper
                    action is IncludeInMassSelection
        AssetRevalueAll
            title is "AssetRevalue"
            visible when (ShowMassSelectAllRevalue)
            list is AssetsForRevalueRel.AssetsForSelection
        BookDetails
            visible when (IsIntercompanyTransfer)
            list is MassSelectionBookDetailsRel.MassSelectionBookDetails
