APManagerDashboard is a List
    title is "Vendors"
    single select
    keyword search field is VendorSearchDocument
        label is "SearchVendors"
        always display
    search form is ManagerDashboardSearchForm
        use as filter
    no data message is "Add_a_New_Vendor"
        icon is icon.icon-empty-no-tasks
        button of "Create"
            action is Create
    card view is VendorCardViewBasic
        row separator is horizontal rule
    Display Fields
    Instance Selection
        where (IsValidForActorContext)
    restrict action ReleaseToARInterface
    restrict action LinkWithARCustomer
    restrict action DeleteVertexResultsFiles
    Detail Sections
        Main is a DashBoardView
            Detail Sections
                Profile
                    double width
                    form is VendorDashboardProfile
                    overview navigation is VendorProfileView
                        label is "ViewVendor"
                Contacts
                    list is VendorContactRel.VendorContactCardList
                    overview navigation is VendorContacts
                Locations
                    triple width
                    list is VendorLocation set.VendorLocationsDashboardList
                    overview navigation is VendorLocations
                Balances
                    visible when (VendorBalancesExist)
                    triple width
                    list is AllVendorBalanceMasterRel.VendorLocationBalanceList
                    overview navigation is NetBalances
                OpenRetrospectiveInvoices
                    visible when (RetrospectiveInvoicesExist)
                    triple width
                    list is RetrospectiveInvoicesRel.OpenInvoicesForAVendor
                    overview navigation is Invoices
                InvoicesOnHold
                    visible when (HasInvoicesOnHold)
                    triple width
                    list is PayablesInvoicesOnHoldRel.InvoicesOnHoldForAVendor
                    overview navigation is OnHoldInvoiceSearch
                OpenToReceive
                    visible when (OpenForReceivingPOLinesExist)
                    triple width
                    list is PurchaseOrderLinesRel.OpenToReceiveLinesForAVendor
                    overview navigation is MyOpenPOLinesToReceiveNav
                ReceivedNotInvoicedLines
                    visible when (RNIPurchaseOrderLinesExist)
                    triple width
                    list is PurchaseOrderLinesRel.ReceivedNotInvoicedLinesForAVendor
                    overview navigation is ViewAllPOLinesNav
        Purchasing is a DashBoardView
            visible when (PurchasingVendorExists)
            use 12 column grid
            Detail Sections
                PurchasingProfile
                    title is "Contact"
                    span 4 columns
                    form is PurchasingVendor.DashboardContact
                    overview navigation is PurchasingVendorNav
                POIssue
                    title is "Issuance"
                    span 4 columns
                    form is PurchasingVendor.DashboardPOIssue
                    overview navigation is PurchasingVendorNav
                Limits
                    title is "Limits"
                    span 4 columns
                    form is PurchasingVendor.DashboardLimits
                    overview navigation is PurchasingVendorNav
                Tolerances
                    title is "Tolerances"
                    span 6 columns
                    form is PurchasingVendor.DashboardTolerances
                    overview navigation is PurchasingVendorNav
                PurchaseFromLocations
                    span 6 columns
                    list is PurchasingVendor.PurchaseFromLocationsRel.POPurchaseFromLocations
                CrossReferenceVendors
                    span 6 columns
                    list is PurchasingVendor.CrossReferenceVendorRel.CrossReferenceVendorDetailList
                Attachments
                    title is "Attachments"
                    span 6 columns
                    list is PurchasingVendor.PurchasingVendorAttachment set.Attachments
                VendorAccounts
                    span 6 columns
                    list is PurchasingVendor.PurchasingVendorAccountsRel.PurchasingVendorAccountsForVendor
        OpenInvoices is a MultiListView
            visible when (ShowInvoicesTab)
            Detail Sections
                OpenPayablesInvoices
                    visible when (OpenPayablesInvoicesExist)
                    list is PayablesinvoicesRel.OpenPayablesInvoices
                OpenReceivablesInvoices
                    visible when (ReceivablesInvoicesExist)
                    list is CustomerRel.ReceivableInvoicesRel.ReceivableInvoiceRecords
        PurchaseOrders
            visible when (HasPurchaseOrders)
            list is PurchaseOrdersRel.PurchaseOrdersForVendorDashboard
        Invoices
            valid when (HasInvoicesOrPayments)
            list is PayablesInvoiceRel.InvoicesForAVendor
        Payments
            valid when (HasInvoicesOrPayments)
            list is CashLedgerPayablesPaymentRel.PaymentsForAVendor
