AllItemLocationDetailsDashboard is a List
    title is "ItemLocationDetails"
    single select
    search form is ItemLocationSearchFormShort
        use as filter
    no data message is "No_Item_LocationsYet"
        description is "Run_Replication_SetAnd_Add_Access_RightsFirst"
        icon is icon.icon-empty-new-project
    card view is ItemLocationCardViewBasic
        row separator is horizontal rule
    Display Fields
    Instance Selection
        where ((IsPerpetualLocation
            or    IsParOrExchangeCart)
        and   ViewAccess)
    open action is restricted
    restrict action None.Create
    restrict action Import
    restrict action ValidateAll
    Detail Sections
        Recommendations is a MultiListView
            visible when (IsPerpetualLocation)
            Detail Sections
                KPIList
                    list is IIHItemLocation.KpiList
                Recommendation
                    list is IIHItemLocation.ItemDetailRecommendationGridViewList
                DailyDataChart
                    visible when (not FillGraphGaps)
                    list is IIHDailyDataRel.DailyTransactionChartView
        Information is a DashBoardView
            visible when (IsPerpetualLocation)
            use 12 column grid
            Detail Sections
                Specifications
                    span 4 columns
                    form is Specifications
                Reference
                    span 4 columns
                    form is Reference
                UnitsOfMeasure
                    span 4 columns
                    form is UnitsOfMeasure
                ItemInformation
                    span 3 columns
                    form is IIHItemLocation.GeneralStatistics
                Schedule
                    span 3 columns
                    form is Schedule
                History
                    span 3 columns
                    form is History
                OrderPolicy
                    span 3 columns
                    form is OrderPolicy
                LeadTimeKPI
                    title is "LeadTimeKPI"
                    span 3 columns
                    form is LeadTimeKPI
                LeadTimeReference
                    span 3 columns
                    form is LeadTimeReference
                ReplacedItems
                    span 3 columns
                    list is ReplacementItemsInLocationRel.ReplacedItemsList
        ParRecommendations is a MultiListView
            title is "Recommendations"
            visible when (IsParOrExchangeCart)
            Detail Sections
                ParKPIList
                    list is IIHItemLocation.ParKpiList
                ParRecommendation
                    list is IIHItemLocation.ParItemDetailRecommendationGridViewList
                ParDailyDataChart
                    visible when (not FillGraphGaps)
                    list is IIHDailyDataRel.ParDailyTransactionChartView
        ParInformation is a DashBoardView
            title is "Information"
            visible when (IsParOrExchangeCart)
            use 12 column grid
            Detail Sections
                ParSpecifications
                    title is "Specifications"
                    span 4 columns
                    form is ParSpecifications
                ParReference
                    title is "Reference"
                    span 4 columns
                    form is ParReference
                ParUnitsOfMeasure
                    span 4 columns
                    form is ParUnitsOfMeasure
                ParItemInformation
                    title is "Information"
                    span 3 columns
                    form is IIHItemLocation.ParGeneralStatistics
                ParSchedule
                    title is "Schedule"
                    span 3 columns
                    form is ParSchedule
                ParHistory
                    title is "History"
                    span 3 columns
                    form is ParHistory
                ParOrderPolicy
                    title is "OrderPolicy"
                    span 3 columns
                    form is ParOrderPolicy
                ParLeadTimeKPI
                    title is "LeadTimeKPI"
                    span 3 columns
                    form is ParLeadTimeKPI
                ParLeadTimeReference
                    title is "LeadTimeReference"
                    span 3 columns
                    form is ParLeadTimeReference
