BillingStandardCommentAttachmentList is a List
    is primary
    title is "BillingStandardComments"
    no data message is "Add_a_new_standard_comment_attachment"
        icon is icon.icon-empty-new-project-new
        button of "Create"
            action is Create
    Display Fields
        button of "<Name>"
            sub form is BillingStandardCommentSubform
            label is "Title"
            display as link
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
