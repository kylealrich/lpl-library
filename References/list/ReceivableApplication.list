ApplicationCloseList is a List
    title is "Applications"
    initially display search
    no data message is "No_Applications_Exist"
    Display Fields
        group label is untranslatable:"Transaction"
            Company
            TransientDebitCustomer
            TransientFunctionalType
                label is "Type"
            ReceivableApplication.Invoice
                label is "Number"
            ApplicationAmount.CurrencyAmount
        group label is "CreditTransaction"
            CreditTransaction.CreditCompany
                label is "Company"
            CreditTransaction.CreditCustomer
                label is "Customer"
            TransientFunctionalCreditType
                label is "Type"
            CreditTransaction.CreditNumber
                label is "Number"
            CreditTransaction.CreditApplicationAmount.CurrencyAmount
                label is "AppliedAmount"
                raise blue alert when (HasCurrAdjustments)
                    mouse over text is "HasGainLossAdjustment"
        Result
    restrict action UnreleasedCashApplication.Create
    restrict action UnreleasedCashApplication.Update
    restrict action UnreleasedCashApplication.Delete
    restrict action UnreleasedCashApplication.Create
    restrict action UnreleasedCashApplication.Update
    restrict action UnreleasedCashApplication.Remove
    restrict action UnreleasedCashApplication.Delete
    restrict action UnreleasedCashApplication.ReleaseFromReceivablePaymentHeader
    restrict action RequiresAuditListing.Remove
    restrict action RequiresAuditListing.Update
    restrict action RequiresAuditListing.Delete
    restrict action AvailableForPosting.Create
    restrict action AvailableForPosting.Update
    restrict action AvailableForPosting.Remove
    restrict action AvailableForPosting.Delete
    restrict action AvailableForPosting.Post
    restrict action ReopenDistributionSet
    restrict action ProcessDistributionSetSelections
    restrict action ProrateAndSelectAll
    restrict action MatchDistributionsForFundAccounting
    restrict action ApplicationPosted.BillOfExchangeCreate
    restrict action ApplicationPosted.Update
    restrict action ApplicationPosted.SelectForReversal
    restrict action ApplicationPosted.UnselectReversal
    restrict action ApplicationPosted.UpdateCancelSequence
    restrict action ApplicationPosted.Reverse
    restrict action ApplicationPosted.BillOfExchangeReverse
    restrict action UpdateAdjustAmounts
    restrict action PostAll
    Actions
        action is open
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
    Detail Sections
        Adjustments
            allow nested detail sections
            list is ReceivableApplicationAdjustment set.AdjustmentsViewOnly
