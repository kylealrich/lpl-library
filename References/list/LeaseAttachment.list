Attachments is a List
    is primary
    title is "RelatedDocuments"
    single select
    no data message is "NoRelatedDocuments"
        icon is icon.icon-empty-no-notes
        button of "AddNewDocument"
            action is Create
    Display Fields
        Description
            allow update
        Attachment.Title
            label is "Title"
        button of icon.attach
            visible when (HasAttachment)
            view Attachment.File
