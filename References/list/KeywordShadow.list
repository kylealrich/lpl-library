ItemForRequisition is a List
    title is "ItemSearch"
    search form is KeywordSearchForm
    Required Search Parameters
        TextSearch
    card view is ItemCardViewBasic
    Display Fields
        Item
            link is ItemDashboard
        DerivedRequestingLocation
            label is "DefaultRequestingLocation"
        DerivedVendorItem
            label is "VendorItem"
        DerivedVendor
            label is "Vendor"
            link is ViewVendor
        DerivedPurchaseFromLocation
            label is "PurchaseFrom"
            link is ViewPurchaseFromLocation
        ContractLine.Manufacturer
        ContractLine.ManufacturerNumber
        DerivedContractID
            label is "Contract"
            link is ViewContract
        DerivedContractLine
            label is "Line"
            link is ViewContractLine
        DefaultUnitCost
            label is "UnitCost"
        DerivedCostUOM
            label is "U\\O\\M"
        DefaultCurrencyCode
            label is "CurrencyCode"
    Instance Selection
        where (ValidRequesterItems
        and   (ItemMasterItem
            and   IsActive
            or    not ItemMasterItem)
        and   (SpecialOrServiceItemHasCostOrNoCharge
            or    not ContractItem))
    open action is restricted
    restrict action RSSLPLAddToRequisition
    restrict action RSSLPLAddRequisition
    restrict action RSSLPLAddSelectedToRequisition
    restrict action RSSLPLAddSelectedToNewRequisition
    restrict action RSSLPLAutoAddToRequisition
    Actions
        action is CreateRequisition
        action is AddToRequisition
