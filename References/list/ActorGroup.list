ActorGroupHierarchyList is a List
    is primary
    initially display search
    implements TreeView
    Display Fields
        ActorGroup
            raise blue alert when (HasActorChildren)
                mouse over text is "ActorsAssignedToThisActorGroup"
        Description
    Actions
        action is Create
        navigation is ActorGroupOrgChart
            label is "ViewActorGroupInOrgChart"
    Detail Sections
        ActorsInImmediateGroup
            title is "ActorsIn<ActorGroup>"
            list is GroupMemberRel.ActorsForActorGroupList
                helper list is ActorsNotInGroupRel.ActorList
                    action is AddActorToActorGroup
        ActorsInExpandedGroup
            title is "ActorsIn<ActorGroup>AndDescendents"
            visible when (GroupOrDescendentHasActorChildren)
            list is ActorGroupMemberShadow set.ActorGroupMemberShadowResidenceGroupActorList
