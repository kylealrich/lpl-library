CashForecastCategories is a List
    is primary
    title is "CashForecastCategories"
    no data message is "No_Cash_Forecast_Categories_to_view"
        icon is icon.icon-empty-no-tasks
    Display Fields
        DisplayOrder
            sort order is ByDisplayOrder
                is default
        NewDisplayOrder
            allow update
        CashForecastCategory.CashTransactionCategory
            select is CashTransactionCategorySelect
            raise yellow alert when (CreatedFromStatementLine)
                mouse over text is "SystemCreatedBasedOnTheExistenceOfBankStatementTransactions"
        ForecastCreationParameter.ForecastCalculation
    Actions
        action is helper list
            action icon is hidden
            label is "SelectCategory"
            hide when invalid
            valid when (CashForecast.IsUpdatable)
        action is AddCategory
            label is "AddCategory"
            hide when invalid
            valid when (HaveBuiltForecast)
        action is open
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
        action is refresh
            label is "_"
