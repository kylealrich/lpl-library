AllIncomingBankStatementDetailList is a List
    title is "AllBankStatements"
    no data message is "No_Bank_Statements_to_view"
        icon is icon.icon-empty-no-tasks
    Display Fields
        CashManagementAccountRel.FinancialInstitution
        IncomingBankStatementDetail
            raise yellow alert when (AccountExcludesBankStatements)
                mouse over text is "AccountExcludesBankStatements"
            sort order is ByAccount
        Status
            raise red alert when (NotReceived)
                mouse over text is "StatementNotReceived"
            raise yellow alert when (ReceivedNotImported)
                mouse over text is "StatementReceivedButNotImported"
            raise green alert when (MultipleStatementsExistForSameDay)
                mouse over text is "MultipleStatementsExistForThisDay"
            raise blue alert when (RaiseBlueAlert)
                mouse over text is "<DerivedBlueAlertMouseOverText>"
            sort order is ByStatus
        TimeReceived
        TimeImported
        Comment
            allow update
        button of "ViewBankStatement"
            visible when (BankStatementExists)
            link is BankStatement
            display as link
    open action is restricted
