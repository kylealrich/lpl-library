AttachmentCardList is a List
    title is "Attachments"
    implements AttachmentList
        attachment is Attachment.File
        create action is Create
            invoked.Attachment = Attachment
    show as simple list
    no data message is "Upload_Attachments_Here"
        icon is icon.icon-empty-no-notes
        button of "Upload"
            action is Create
    Display Fields
        Attachment.Title
            label is "AttachmentTitle"
            allow update
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
    restrict action UpdateCMAttachment
    restrict action SupplierCreate
    restrict action SupplierUpdate
    Actions
        action is Create
            label is "Upload"
            hide when invalid
        action is Update
            label is "Update"
            hide when invalid
        action is Delete
            hide when invalid
