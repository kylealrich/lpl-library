CashApplicationList is a List
    title is "SelectInvoicesForApplication_-_NationalAccountListing"
    initially display search
    no data message is "No_National_Account_Transactions_Exist"
    Display Fields
        group label is "InvoiceInformation"
            Company
            Customer
                sort order is Set3
            ReceivableInvoiceDetail.ReceivableInvoiceDetailType
                label is "Type"
                sort order is primary
            ReceivableInvoiceDetail.Invoice
                sort order is primary
            TransactionDate
                sort order is ByTransactionDate
            DueDate
                sort order is Set2
            CustomerPurchaseOrder
                label is "PurchaseOrder"
                sort order is Set7
            PartiallyApplied
        group label is "Applications"
            AmountToApply
                label is "OpenAmount"
                allow update
                raise yellow alert when (CurrencyNotEqualToReceivablePaymentCurrency)
                    mouse over text is "Receivable_Invoice_Detail's_CurrencyNotEqualTo_Receivable_Payment's_Currency."
                sort order is Set3
        group label is "Adjustments"
            TransientApplicationDiscountDate
                label is "DiscountDate"
                column visible when (not ContextReceivablePaymentRel.IsZeroPayment)
            AmountToAdjustReason
                label is "Reason"
                allow update
                select is ReceivableReasonCodeInvoiceSelectionList
            AmountToAdjust
                label is "Amount"
                allow update
        group label is "GlobalLedger"
            TransientGeneralLedgerDate
                label is "Date"
                allow update
        TransientOperator
            label is "Operator"
            allow update
            column visible when (CashApplicationOperatorRequired)
    Instance Selection
        where (AvailableForCashApplication
        and   NotSummarizedOrFirstSummarizedLine
        and   IsOpenAndPortalPaymentUnSelected
        and   WithinCompanyRange
        and   WithinCustomerRange
        and   WithinInvoiceAndXrefNbrRange
        and   WithinTransactionDateRange
        and   WithinDiscountDateRange
        and   WithinDueDateRange
        and   WithinOpenAmountRange
        and   WithinProjectRange
        and   WithinCustomerPurchaseOrderRange
        and   WithinTransUser1Range
        and   WithinCurrencyRange
        and   WithinProcessLevelRange
        and   not IntercompanyBilling)
    restrict action ApplyInvoice
    restrict action ApplyInvoiceToPayment
    restrict action ApplyToCredit
    restrict action ApplyToPayment
    restrict action Create
    restrict action CreateDetailDispute
    restrict action CreateReceivableApplication
    restrict action Delete
    restrict action FastUpdate
    restrict action InvoiceSelection
    restrict action LineItemSelectForApplicationNoOperator
    restrict action LineItemSelectForApplicationOperator
    restrict action LineItemSelection
    restrict action QuickWriteoff
    restrict action SelectForApplicationNoOperator
    restrict action SelectForApplicationOperator
    restrict action SelectForGrouping
    restrict action SelectOpenAmountForApplication
    restrict action Unselect
    restrict action UnSelectForGrouping
    restrict action UnselectLineItem
    restrict action UpdateApplicationGeneralLedgerDates
    restrict action WriteOff
    restrict action AddAttachment
    Actions
        action is ApplyToPaymentOperator
            action icon is submit
            hide when invalid
        action is ApplyToPaymentNoOperator
            action icon is submit
            hide when invalid
        action is open
            label is "_"
        action is save
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
