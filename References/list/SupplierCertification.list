AllSupplierCertifications is a List
    title is "CertificationsFor<Supplier.SupplierName>"
    Display Fields
        SupplierSourceId
            label is "Contact"
        CommodityCode
            column visible when (CommodityCodeAllowed)
        SupplierSourceId.VendorLocation
            label is "LocationCode"
        SupplierSourceId.VendorLocation.VendorName
            label is "Location"
        SupplierCertification.PayablesCertificationCode
            label is "CertificationCode"
            raise red alert when (RedAlertAtEitherLevel)
                mouse over text is "CertificationHasExpiredOrWillExpireWithin<Alerts.RedAlert>Days"
            raise yellow alert when (YellowAlertAtEitherLevel)
                mouse over text is "CertificationWillExpireWithin<Alerts.YellowAlert>Days"
        SupplierCertification.CertificationEffectiveDate
            label is "EffectiveDate"
            sort order is EffectiveDateDescending
        CertificationExpirationDate
            label is "ExpirationDate"
            allow update
        SupplierCertification.PayablesCertificationCode.Description
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
        Active
            allow update
    form is SupplierCertification
    restrict action EmailToSupplierContacts
