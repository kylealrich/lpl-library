BankStatementLineTotalsList is a List
    title is "BankStatementLineTotals"
    no data message is "No_Bank_Statement_activity_to_view"
        icon is icon.icon-empty-new-project
    Display Fields
        CashTransactionCategory
        group label is "Reconciled"
            ReconciledLinesAmountByCategory
                label is "Amount"
            NumReconciledLinesByCategory
                label is "Lines"
        group label is "Unreconciled"
            UnreconciledLinesAmountByCategory
                label is "Amount"
            NumUnreconciledLinesByCategory
                label is "Lines"
    Instance Selection
        where (HasBankLineActivity)
    form is StatementLineStatusByCategoryForm
    restrict action CreateForecastCategory
    restrict action CreatePositionCategory
