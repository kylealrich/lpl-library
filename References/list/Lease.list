AllLeaseList is a List
    is report for LeaseSpecialist
    title is "Lease"
    initially display search
    implements TreeView
        has children when (HasChild)
        disable create within
    Display Fields
        Company
        Lease
            raise red alert when (ExpirationDateRedAlert)
                mouse over text is "LeaseHasExpiredOrWillExpireWithin30Days"
            raise yellow alert when (ExpirationDateYellowAlert)
                mouse over text is "LeaseWillExpireWithin90Days"
        Lessor
        Status
        LeaseClassification
            label is "Classification"
        LeaseType
            label is "Type"
        TerminateDate
        EndDate
        SecurityDeposit.TransactionAmount
            label is "SecurityDeposit"
        BargainPurchaseAmount.TransactionAmount
            label is "BargainPurchaseAmount"
    Instance Selection
        where (IsValidForActorContext)
