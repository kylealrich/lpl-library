CashAllocationCodeDetails is a List
    is primary
    title is "CashAllocationCodeDetails"
    implements InlineCreate
    suppress sub-totals
    no data message is "Add_a_new_Allocation_Code_Detail"
        icon is icon.icon-empty-new-project
        button of "Create"
            action is Create
    Display Fields
        AllocationAccount
            allow update
        AllocationAmount
            allow update
            total
            column visible when (CashAllocationCode.AllocationType.Amount)
        AllocationPercent
            allow update
            total
            column visible when (CashAllocationCode.AllocationType.Percent)
        Comment
            allow update
