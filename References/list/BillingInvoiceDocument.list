BillingInvoiceDocumentList is a List
    is primary
    title is "BillingInvoiceDocuments"
    no data message is "Add_a_invoice_documents"
        icon is icon.icon-empty-new-project-new
        button of "Create"
            action is Create
    Display Fields
        Company
        BillingInvoiceDocument
        BillingInvoiceDocumentTemplate.Title
            allow update
        button of "<BillingInvoiceDocumentTemplate.Title>"
            view BillingInvoiceDocumentTemplate.File
            label is "Document"
            left align
            display as link
        Active
    Actions
        action is Create
        action is Update
        action is Delete
        navigation is ViewSampleTemplates
