AllClosePeriodTasks is a List
    title is "AllTasksFor<ClosePeriod>"
    search form is ClosePeriodTaskMgrSearch
        use as filter
    Display Fields
        group label is "Task"
            TaskName
                label is "Name"
                show up to 20 characters
                raise red alert when (OneTimeTask)
                    mouse over text is "OneTimeTask"
            ParentClosePeriodTask.TaskName
                label is "Parent"
                show up to 20 characters
        group label is "Type"
            PrimaryTaskType
                label is "Primary"
                show up to 15 characters
                column visible when (CloseManagementGroup.HasTaskTypes)
            SecondaryTaskType
                label is "Secondary"
                show up to 15 characters
                column visible when (CloseManagementGroup.HasTaskTypes)
            TertiaryTaskType
                label is "Tertiary"
                show up to 15 characters
                column visible when (CloseManagementGroup.HasTaskTypes)
        group label is "Ownership"
            FinanceTeam
                label is "Team"
                show up to 15 characters
            TaskOwner.TeamMember.Employee.PresentationNameSnapshot
                label is "Resource"
                show up to 15 characters
        group label is "Start"
            ScheduleForTask.BeginDate
                label is "Scheduled"
            ActualForTask.BeginDate
                label is "Actual"
                raise red alert when (StartedLate)
                    mouse over text is "StartedLate"
                raise yellow alert when (StartMetric.StartedEarly)
                    mouse over text is "StartedEarly"
        group label is "Completed"
            ScheduleForTask.DueDate
                label is "Scheduled"
                raise yellow alert when (TaskInJeopardy)
                    mouse over text is "InJeopardy:EstimatedDueDateIs<EstimateForTask.DueDate>"
            ActualForTask.DueDate
                label is "Actual"
                raise red alert when (CompletedLate)
                    mouse over text is "CompletedLate"
                raise yellow alert when (DueMetric.CompletedEarly)
                    mouse over text is "CompletedEarly"
        group label is "Effort"
            ScheduleForTask.LevelOfEffort
                label is "Scheduled"
            ActualForTask.LevelOfEffort
                label is "Actual"
    Instance Selection
        where (TaskLevel.Detail)
    form is ClosePeriodTaskForm
    restrict action Update
    restrict action CreateClosePeriodTaskJournal
    Actions
        action is SendMessage
            hide when invalid
        action is Reassign
            hide when invalid
        action is ManualApprove
            hide when invalid
        action is ManualReject
            hide when invalid
        action is ReassignApprover
            hide when invalid
        action is open
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
