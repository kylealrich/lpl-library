COProformaInvoiceList is a List
    title is "ProformaInvoices"
    initially display search
    no data message is "Nothing_to_show"
        icon is icon.icon-empty-no-tasks-new
    Display Fields
        Company
        ProformaInvoice
        CustomerOrderRel.Customer
        CustomerOrderRel.Customer.Name
        ProformaPercent
        Status
        InvoiceAmount
        InvoiceDate
        ReceivedDate
        button of "<DerivedProformaNumber>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
    form is ProformaInvoiceComposite
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action ProcessPrepayments
