AllOpenDocuments is a List
    is report for ApplicationAdministrator,FinancialsViewer,FinancialsProcessor,IntercompanyBillingSpecialist
        category is "Document"
    single select
    initially display search
    show as simple list
    Display Fields
        IntercompanyBillingDocumentHeader
            label is "Document"
            sort order is primary
                is default descending
        Status
        group label is "Receivables"
            ReceivableEntity.Company
            ReceivableEntity.Company.Name
        group label is "Payables"
            PayableEntity.Company
            PayableEntity.Company.Name
        InvoiceDate
        DueDate
            raise red alert when (IsPastDue)
                mouse over text is "PastDue"
        NetDueAmount
            label is "TotalDue"
        DocumentCurrency
            no label
        Description
        OriginatedFrom
    Instance Selection
        where (OpenStatus)
    restrict action AddToSettlement
    Actions
        action is Unreleased.Release
            action icon is release
            hide when invalid
        action is Unreleased.SubmitForApproval
            action icon is release
            hide when invalid
        action is Unreleased.Create
            action icon is create
            label is "_"
        action is open
            action icon is open
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
        action is search
            action icon is filter
            label is "_"
    Detail Sections
        ApprovalProgress
            title is "ApprovalHistory"
            visible when (ShowSingleApprovalHistoryPanel)
            form is ProcessIndicatorForm
        PayablesProgress
            title is "PayablesApprovalHistory"
            visible when (ShowReceivablesAndPayablesHistoryPanel)
            form is ProcessIndicatorForm
        ReceivablesProgress
            title is "ReceivablesApprovalHistory"
            visible when (ShowReceivablesAndPayablesHistoryPanel)
            form is ProcessIndicatorFormForReceivables
        ApprovalHistory
            visible when (DisplayApprovalTrackingPanel)
            list is IntercompanyBillingDocumentApprovalHistoryRel.primary
        PayablesApprovalHistory
            visible when (PayablesApprovalTrackingPanel)
            list is IntercompanyBillingDocumentApprovalHistoryRel.primary
        ReceivablesApprovalHistory
            visible when (ReceivablesApprovalTrackingPanel)
            list is IntercompanyBillingDocumentApprovalHistoryForReceivableRel.primary
