AdjustmentsForAPurchaseOrder is a List
    Display Fields
        PurchaseOrderReceipt
            label is "Receipt"
            link is ViewReceiver
        POReceiptAdjustmentAndInspection
            label is "DocumentNumber"
            raise red alert when (HasUnreleasedBuyerMessages)
                mouse over text is "OneOrMoreLinesHaveUnreleasedBuyerMessages"
            sort order is primary
                is default descending
        ReferenceNumber
        AdjustmentInspectionDocumentType
        PurchaseOrderReceipt.POLineReceivedQuantity
            label is "ReceivedQuantity"
        Status
            raise yellow alert when (InterfaceReleaseError)
                mouse over text is "ReleaseActionAttemptedDuringInterfaceWasUnsuccesful"
    Instance Selection
        where (IsAdjustmentDocument
        and   not InterfaceInProcess)
    form is ReceiptAdjustmentEntry
    restrict action Unreleased.CreateInspection
    restrict action Unreleased.AddAcceptAll
    restrict action Unreleased.ReleaseInspection
    Actions
        action is open
        action is Unreleased.ReleaseAdjustment
            label is "Release"
            hide when invalid
        action is search
        navigation is UnreleasedBuyerMessages
            hide when invalid
