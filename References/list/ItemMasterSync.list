ItemMasterSyncList is a List
    is primary
    propagate as a drill
    title is "ItemsToSynchronize"
    initially display search
    no data message is "Nothing_to_see_here"
        icon is icon.icon-empty-no-orders-new
    Display Fields
        Actor
            label is "Name"
        ItemGroup
            raise yellow alert when (not ItemGroupSyncAllowed)
                mouse over text is "ItemGroupDoesNotAllowItemSynchronization"
        Item
            link is ItemInformation
        group label is "Description1"
            Item.Description
                label is "Current"
            ReplacedDescription1
                label is "Replacement"
                allow update
        group label is "Description2"
            Item.Description2
                label is "Current"
            ReplacedDescription2
                label is "Replacement"
                allow update
        group label is "Description3"
            Item.Description3
                label is "Current"
            ReplacedDescription3
                label is "Replacement"
                allow update
        ContractsAreFound
            label is "ContractsFound"
            raise yellow alert when (ContractsFound)
    Actions
        action is SelectAll
        action is UnselectAllMyRecords
        action is SyncItemInformation
            label is "SynchronizeItemInformation"
        action is AssignMyRecordsToAnotherActor
            label is "ReassignMyRecords"
        navigation is ViewUploadSpreadsheets
            hide when invalid
        navigation is ViewFactSheet
            hide when invalid
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is Update
            action icon is open
            label is "_"
            mouse over text is "Update"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
            hide when invalid
        action is search
            label is "_"
        action is refresh
            label is "_"
