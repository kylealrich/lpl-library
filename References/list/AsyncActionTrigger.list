ActiveAsyncActionTriggerList is a List
    title is "Active"
    single select
    initially display search
    no data message is "NothingActiveRightNow"
        description is "<system current timestamp>_-_RefreshToUpdateThisList"
        icon is icon.icon-empty-no-orders-new
    Display Fields
        AsyncQueueDefinition
            label is "Queue"
            display as tag
                color of yellow when (AsyncQueueDefinition.Suspended)
            raise yellow alert when (AsyncQueueDefinition.Suspended)
                mouse over text is "QueueIsSuspended"
        AsyncActionRequest.DataArea
            raise red alert when (AsyncActionRequest.DataAreaRedAlert)
                mouse over text is untranslatable:"<AsyncActionRequest.SuspendedMessage>"
            raise yellow alert when (AsyncActionRequest.DataAreaYellowAlert)
                mouse over text is "SystemUpgradeRequestsAreCurrentlyActiveAndMustBeCompleteBeforeProcessingCanContinue"
        Status
            label is "Status"
            link is WhyIsThisTriggerNotRunning
            sort order is AsyncActionTriggerByStatus
                is default
        Priority
        AsyncActionRequest.ImplementingClass
        AsyncActionRequest.AsyncAction
            bold
        Started
    Instance Selection
        where (Status.PendingStart
        or    Status.InProgress)
    restrict action Queued.Create
    restrict action DeleteMyFinishedTriggers
    restrict action DeleteMyFinishedTriggersForQueue
    restrict action DeleteFinishedTriggersForMyRequest
    Actions
        action is refresh
