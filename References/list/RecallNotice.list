ActiveRecallNotices is a List
    title is "ActiveNotices"
    initially display search
    no data message is "There_Are_No_Active_Notices"
        icon is icon.icon-empty-no-tasks
    Display Fields
        RecallGroup
        RecallNotice
            sort order is primary
        WorkingId
            raise blue alert when (ApprovedItemProposal)
                mouse over text is "FromNewItemProposal"
            sort order is ByWorkingId
        Name
            raise red alert when (DrugRelated)
                mouse over text is "DrugRelated"
        RecallType
            raise red alert when (FDATypeOne)
                mouse over text is "TypeOneFDAClassification"
        RecallDate
            raise red alert when (HasItemsOnOtherNotices)
                mouse over text is "ItemsOnNoticeAlsoOnOtherNotices;SeeItemsForDetails"
        RecallReceivedDate
            raise red alert when (ShowRedAlert)
                mouse over text is "NoticeReceived<DaysSinceReceived>DaysAgo"
            raise yellow alert when (ShowYellowAlert)
                mouse over text is "NoticeReceived<DaysSinceReceived>DaysAgo"
        Status
        button of icon.link
            visible when (NoticeWithActivity)
            link is RecallActivityLink
            label is "TaskActivity"
    Instance Selection
        where (ActiveRecallNotice)
    restrict action Pending.SupplierPortalCreate
    restrict action Pending.RecallPortalCreate
    restrict action Pending.ThirdPartyCreate
    restrict action Pending.SupplierPortalCreateItemProposal
    restrict action Pending.SupplierDelete
    restrict action Pending.RequesterCreateItemProposal
    Actions
        action is Active.Close
            action icon is finalize
            hide when invalid
        action is CompletedResolutionsPending.Close
            action icon is finalize
            hide when invalid
        navigation is RecallDocumentReport
            action icon is print
            label is "PrintDocument"
            hide when invalid
            valid when (RecallNoticeExists)
        action is CopyNotice
            action icon is copy
            label is "Copy"
            mouse over text is "CopyNotice"
        action is Pending.Create
        action is search
            label is "_"
