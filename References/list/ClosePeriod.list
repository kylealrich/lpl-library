AdminClosedPeriodList is a List
    title is "ClosedPeriods"
    initially display search
    Display Fields
        ClosePeriod
            label is "Period"
            raise green alert when (ResolvedIssue)
                mouse over text is "Resolved_issue_exists"
            raise blue alert when (UnresolvedIssue)
                mouse over text is "Unresolved_issue_exists"
        group label is "Started"
            ScheduledBeginDate
                label is "Scheduled"
            PeriodOpenDateDate
                label is "Actual"
                raise red alert when (PeriodStartedLate)
                    mouse over text is "PeriodStartedLate"
                raise yellow alert when (PeriodStartedEarly)
                    mouse over text is "PeriodStartedEarly"
        group label is "Closed"
            ScheduledDueDate
                label is "Scheduled"
            PeriodCloseDateDate
                label is "Actual"
                raise red alert when (PeriodClosedLate)
                    mouse over text is "PeriodClosedLate"
                raise yellow alert when (PeriodClosedEarly)
                    mouse over text is "PeriodClosedEarly"
        PeriodReopened
            label is "Reopened"
        group label is "TaskCounts"
            TotalCount
                label is "Total"
                center
                link is AllTasksNav
            CountClosed
                label is "Completed"
                center
                link is ClosedNav
            CountVoided
                label is "Voided"
                center
                link is VoidedNav
            CountReopened
                label is "Reopened"
                center
                link is ReopenedNav
    Instance Selection
        where (CloseManagementStatus.Closed)
    form is MaintainPeriodForm
    restrict action Create
    restrict action Update
    Actions
        action is ReopenPeriod
            label is "Reopen"
            hide when invalid
            valid when (ValidReopen)
        action is Reset
            label is "Reset"
            hide when invalid
            valid when (ValidReset)
        action is RevertToScheduled
            label is "Reset"
            hide when invalid
            valid when (ValidRevertToScheduled)
        action is open
            label is "_"
        action is search
            label is "_"
    Detail Sections
        Schedule
            list is TheClose.ScheduleTreeViewList
