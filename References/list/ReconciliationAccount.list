AccountListForAccountGroup is a List
    title is "AttachedReconciliationAccounts"
    initially display search
    no data message is "No_accounts_are_assigned_to_Report_Group"
        icon is icon.icon-empty-no-tasks
    Display Fields
        ReconciliationCodeBlock
            raise yellow alert when (NewAccount)
                mouse over text is "NewAccountAdded;AddDefaultsThenResetFlag"
            raise blue alert when (IsAccountWithinGroup)
                mouse over text is "AccountWithinReconciliationGroup<ParentReconciliationAccount.ReconciliationGroup>"
            sort order is ByReconciliationCodeBlock
                is default
        ReconciliationCodeBlock.GeneralLedgerChartAccount.AccountDescription
        ReconcileFrequency
        ReconciliationAccountType
        Priority
            raise red alert when (Priority.High)
        Risk
            raise red alert when (Risk.High)
        ReconciliationAccountGroup
            allow update
            select is ReconciliationAccountGroupNoChildren
    Instance Selection
        where (not LevelType.Group)
    restrict action Create
    restrict action CreateReconciliationGroup
    restrict action CreateNonAccountReconciliation
    restrict action Delete
    restrict action ResetNewAccountFlag
    restrict action AddToReconciliationGroup
    restrict action RemoveFromReconciliationGroup
    restrict action CreatePeriodReconciliations
    restrict action ClearAllReconciliations
    restrict action LoadAndReconcile
    restrict action DeleteGLReconciliationTransactions
    restrict action DeleteInterfaceReconciliationTransactions
    restrict action SaveDetailTransactionReconciliation
    restrict action ReconcileDetailTransactions
    restrict action ResetAllNewAccountsFlag
    restrict action AssignAccountToReportGroup
    restrict action SwitchToListOverListView
    restrict action SwitchToCombinedListView
    Actions
        action is helper list
            action icon is hidden
            label is "AssignAccountToReportGroup"
            valid when (not ReconciliationAccountGroup.HasChild)
        action is open
            label is "_"
        action is save
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
