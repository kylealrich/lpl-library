ApprovalCodes is a List
    is primary
    title is "ApprovalCodes"
    initially display search
    no data message is "Add_a_new_Approval_Code"
        icon is icon.icon-empty-new-project
        button of "Create"
            action is Create
    Display Fields
        ApprovalCode
            sort order is primary
        Description
        Active
            allow update
    Detail Sections
        ApprovalLevels
            visible when (HasApprovalLevels)
            list is ApprovalCodeResourceRel.Approvers
