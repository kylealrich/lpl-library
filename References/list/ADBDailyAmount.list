ADBDailyAmountList is a List
    is primary
    title is "DailyBalances"
    suppress sub-totals
    Display Fields
        AccountingEntity
            label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
        AccountingUnit
            label is "<FinanceEnterpriseGroup.AccountingUnitLabel>"
            column visible when (FinanceEnterpriseGroup.ADBSelection.AccountAndAccountingUnit)
        FinanceDimension1
            label is "<FinanceEnterpriseGroup.FinanceDimension1Label>"
            column visible when (FinanceEnterpriseGroup.ADBSelection.AccountAndDimension1)
        ADBDailyAmount.GeneralLedgerChartAccount
            label is "<FinanceEnterpriseGroup.AccountLabel>"
            select is PostingADBAccountList
        ADBDailyAmount.RunDate
            label is "RunDate"
        AccountingEntity.FunctionalCurrency
            label is "Currency"
        Amount
            label is "PostedAmount"
            total
        AdjustmentAmount
            total
        BalanceOnPostDate
            total
        BalanceOnTransactionDate
            total
            column visible when (DisplayADBInTransactionDate)
