Approvers is a List
    title is "ApprovalLevels"
    no data message is "Create_Responsibility_Matrix_Approvers"
        icon is icon.icon-empty-new-project
        button of "AddApprovers"
            action is CreateApprovers
    Display Fields
        ApprovalLevel
            sort order is ByApprovalLevel
                is default
        group label is "Approver"
            Approver
                label is "ID"
            Approver.PreferredSimplePresentationName
                label is "Name"
                show up to 15 characters
                raise red alert when (ApproverResourceInactive)
                    mouse over text is "ResourceIsInactive"
        group label is "ApprovalTeam"
            ApprovalTeam
                label is "Name"
                raise red alert when (TeamHasNoMembers)
                    mouse over text is "TeamHasNoMembers"
            ApprovalTeam.Description
                show up to 15 characters
                raise red alert when (ApproverTeamMemberInactive)
                    mouse over text is "TeamHasInactiveResourceMember"
        group label is "Position"
            ApprovalPosition
                label is "ID"
            ApprovalPosition.Description
                label is "Name"
                show up to 15 characters
                raise red alert when (ApprovalPositionInactive)
                    mouse over text is "PositionIsInactive"
        EscalationHours
            raise red alert when (InvalidEscalation)
                mouse over text is "HasInvalidEscalationSetting;OpenRecordForDetails"
        ApprovalAmount
        ApprovalCurrency
        DerivedDocumentType
            label is "DocumentType"
    Instance Selection
        where (FirstInSet)
    Actions
        action is CreateApprovers
            action icon is create
            label is "Create"
        action is open
            label is "_"
        action is search
            action icon is filter
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
