AllBankStatementsByAccountList is a List
    title is "BankStatements"
    no data message is "No_Bank_Statements_to_view"
        icon is icon.icon-empty-no-tasks
    Display Fields
        BankStatement
            raise blue alert when (StatementType.Intraday)
                mouse over text is "Intraday"
            sort order is ByBankStatement
        StatementDate
            sort order is ByStatementDate
        BeginningBalance
        EndingBalance
            raise red alert when (NetLineAmountOutOfBalance)
                mouse over text is "StatementOutOfBalanceBy<NetLineOutOfBalanceAmount>"
        StatementCurrency
        StatementStatus
            link is StatementReconciliation
        PostingStatus
            link is StatementDistributions
    restrict action SwitchToCombinedListView
    restrict action SwitchToListOverListView
    restrict action UpdateCashCodeCashPosition
    Actions
        navigation is StatementReconciliationLink
            label is "ReconciliationAnalysis"
            hide when invalid
        navigation is StatementAnalysis
            label is "StatementAnalysis"
            hide when invalid
        action is Unreconciled.ManuallyCreateStatement
            action icon is create
            label is "_"
            mouse over text is "Manually_\\Create_\\Statement"
        action is open
            label is "_"
        action is Unreconciled.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
        action is refresh
            label is "_"
