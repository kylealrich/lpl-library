Invoices is a List
    title is "InvoicesCreatedIn<CreateMonth>/<CreateYear>"
    show 20 lines
    single select
    always display search
    Display Fields
        Vendor
        VendorRel.VendorName
        Company
        Invoice
            link is PayablesInvoiceNavigation
        InvoiceDate
        InvoiceAmount
        CreateDate
        MatchDate
        DaysToMatch
        MatchAgingPeriod
            label is "AgingPeriod"
    Instance Selection
        where (MatchDate entered)
    open action is restricted
    Actions
        action is refresh
            label is "_"
    Detail Fields On Side
        PayablesInvoice.MultiplePurchaseOrdersMsg
            no label
            raise yellow alert when (PayablesInvoice.ShowUnmatchedNoReceiptsInPoolAlert)
                mouse over text is "InvoiceMissingReceipt"
            visible when (PayablesInvoice.HasMultipleMatchPurchaseOrders)
        PayablesInvoice.FirstPurchaseOrder
            raise yellow alert when (PayablesInvoice.ShowUnmatchedNoReceiptsInPoolAlert)
                mouse over text is "InvoiceMissingReceipt"
            visible when (PayablesInvoice.HasSingleMatchPurchaseOrder)
        button of "NotifyBuyerNoReceiptInPool"
            visible when (PayablesInvoice.ShowUnmatchedNoReceiptsInPoolAlert)
            action is PayablesInvoice.EmailNoReceiptInPool
        PayablesInvoice.MatchInvoiceReferenceRel.OriginalInvoice
            visible when (PayablesInvoice.IsMemoOnly)
        PayablesInvoice.MatchInvoiceReferenceRel.OriginalInvoice.Invoice
            visible when (PayablesInvoice.IsMemoOnly)
        PayablesInvoice.MatchProcessType
        PayablesInvoice.MatchLevel
        PayablesInvoice.MatchDate
        PayablesInvoice.MatchedFrom
        PayablesInvoice.MatchTable
        PayablesInvoice.MatchStatus
            display as tag
                color of green when (PayablesInvoice.MatchStatus.Matched)
                color of red when (PayablesInvoice.MatchStatus.Unmatched)
                color of red when (PayablesInvoice.MatchStatus.POCostMessagesExist)
                color of green when (PayablesInvoice.MatchStatus.MatchedInTolerance)
                color of green when (PayablesInvoice.MatchStatus.MatchedWithAutoChargeback)
                color of yellow when (PayablesInvoice.MatchStatus.MatchedOutOfTolerance)
