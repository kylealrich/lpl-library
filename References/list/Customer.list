ARCustomerDashboard is a List
    title is "Customers"
    single select
    keyword search field is Name
        disable translation filtering
    search form is CustomerSearchForm
        use as filter
    no data message is "No_Customers_Exist"
        icon is icon.icon-empty-no-users
    card view is CustomerCardViewBasic
        row separator is horizontal rule
    Display Fields
    Instance Selection
        where (IsValidForActorContext)
    restrict action Anonymize
    restrict action CreatePendingAddAllEFTAdjustments
    restrict action CreatePendingDeleteAllEFTAdjustments
    restrict action CreatePendingHoldAllEFTAdjustments
    restrict action CreatePendingPostponeAllEFTAdjustments
    restrict action CreatePendingUnselectAllEFTAdjustments
    restrict action FastUpdate
    restrict action GetTaxAreaIdUsingAddress
    restrict action PortalCustomerUpdateRequest
    restrict action ProcessPendingEFTAdjustments
    restrict action PurgeAuditLog
    restrict action ResetBalance
    restrict action SetVendor
    restrict action TriggerPayFrom
    restrict action UpdateBODIdFields
    restrict action UpdateCurrentBalance
    restrict action UpdateDraftBalance
    Actions
        action is Create
            action icon is create
            label is "_"
    Detail Sections
        Main is a DashBoardView
            use 12 column grid
            Detail Sections
                Profile
                    span 6 columns
                    form is CustomerDashboardSectionForm
                    overview navigation is CustomerProfileView
                        label is "ViewCustomer"
                OpenPayments
                    span 6 columns
                    list is OpenPaymentsRel.ReceivablePaymentDashboardList
                CurrentInvoices
                    span 6 columns
                    list is OpenTransactionsRel.DashboardCurrentInvoicesList
                PastDueInvoices
                    span 6 columns
                    list is PastDueTransactionsRel.DashboardPastDueInvoicesList
