HealthStatusDataAreaList is a List
    is primary
    title is "HealthStatus"
    Display Fields
        PfiHealthStatusDataArea
            label is "DataArea"
            raise red alert when (Alert.Red)
                mouse over text is "4OrMoreStatusesHavingIssues"
            raise yellow alert when (Alert.Yellow)
                mouse over text is "1OrMoreStatusesHavingIssues"
            raise green alert when (Alert.Green)
                mouse over text is "NoIssuesFound"
    open action is restricted
    restrict action Create
    restrict action Update
    restrict action Delete
    Detail Sections
        WorkunitStatus
            title is "Status"
            list is PfiHealthStatus set.HealthStatusList
        Notification
            title is "Notification"
            list is PfiHealthStatusNotification set.HealthStatusNotificationList
