Attachments is a List
    is primary
    title is "Attachments"
    no data message is "No_Company_Customer_Attachments_Exist"
        description is "To_\\CreateA_\\Company_Customer_\\Attachment,ClickThe_'plus'_inTheTopRightOr_\\Create_\\Company_\\Customer_\\AttachmentBelow."
        icon is icon.icon-empty-no-data
        button of "CreateCompanyCustomerAttachment"
            action is Create
    Display Fields
        CompanyCustomerAttachment
            label is "AttachmentNumber"
        Attachment.Title
            label is "AttachmentTitle"
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
