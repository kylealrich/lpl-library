AdjustmentTransactions is a List
    title is "Adjustments"
    initially display search
    no data message is "No_Inventory_Adjustment_Record_Available"
        icon is icon.icon-empty-no-data
    Display Fields
        Company
        InventoryLocation
            label is "Location"
        InventoryTransaction
            sort order is primary
                is default descending
        Reference1
        TransactionDate
            label is "DateAndTime"
            sort order is ByTransactionDateTime
        Status
            raise yellow alert when (Status.Unreleased)
                mouse over text is "ThisTransactionIsUnreleased"
    Instance Selection
        where (InventoryDocumentType.Adjustment
        and   not InterfaceInProcess)
    restrict action Unreleased.CreateIssue
    restrict action Unreleased.CreateReceipt
    restrict action Unreleased.Create
    restrict action Unreleased.CreateTransfer
    restrict action Unreleased.CreateBinTransfer
    restrict action Unreleased.CreateInventoryReturns
    restrict action LoadToTrueCostInventoryTransactionInterface
    Actions
        action is Unreleased.Release
            action icon is release
            hide when invalid
        action is Unreleased.CreateAdjustment
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is open
            label is "_"
        action is Unreleased.Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
        action is refresh
            label is "_"
