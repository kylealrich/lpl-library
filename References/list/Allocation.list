AllocationControlList is a List
    title is "Allocations"
    initially display search
    no data message is "No_Allocations_Entered"
        icon is icon.icon-empty-new-project
        button of "CreateAllocation"
            action is Create
    Display Fields
        Allocation
        Description
            allow update
        Ledger
            label is "TransactionLedger"
            allow update
        DefaultStep
            allow update
        AllocationGroup
            allow update
        AllowMultiplePostings
            label is "MultiplePostings"
            allow update
            column visible when (AllocationControl.Type.Actuals)
        GeneralLedgerEvent
            label is "GlobalLedgerEvent"
            allow update
            column visible when (AllocationControl.Type.Actuals)
    Actions
        action is CopyAllocation
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
        action is open
            action icon is open
            label is "_"
            mouse over text is "Open"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
            mouse over text is "Search"
