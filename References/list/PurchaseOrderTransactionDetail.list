AdditionalAdjustmentEntrys is a List
    title is "AdditionalAdjustmentEntry"
    implements InlineCreate
    Display Fields
        Lot
            allow update
            select is AvailableLotNumbersList
            column visible when (PurchaseOrderAdjLineRel.IsLotRequiredAtReceipt)
        Serial
            allow update
            select is SerialNumbers
            column visible when (PurchaseOrderAdjLineRel.IsSerialRequiredAtReceipt)
        Sublot
            allow update
            column visible when (PurchaseOrderAdjLineRel.IsLotRequiredAtReceipt)
        Bin
            select is BinsForALocation
            column visible when (PurchaseOrderAdjLineRel.IsBinTracked)
        LotExpirationDate
            label is "ExpirationDate"
            allow update
            raise red alert when (HasDifferentLotExpirationDate)
                mouse over text is "<DifferentLotExpirationDate>"
            column visible when (PurchaseOrderAdjLineRel.IsLotRequiredAtReceipt)
        LotOnHold
            label is "HoldFlag"
            allow update
            column visible when (PurchaseOrderAdjLineRel.IsLotRequiredAtReceipt)
        SecondaryQuantity
            label is "Quantity"
            allow update
            column visible when (IsCatchWeightAndNotIsSerialRequiredAtReceiptForAdjustment)
        Quantity
            allow update
            column visible when (IsNotCatchWeightAndNotIsSerialRequiredAtReceiptForAdjustment)
        PurchaseOrderAdjLineRel.DerivedDisplayUnitOfMeasure
            label is "UOM"
        Quantity
            label is "StockQuantity"
            allow update
            column visible when (IsCatchWeightAndNotIsSerialRequiredAtReceiptForAdjustment)
        PurchaseOrderAdjLineRel.PurchaseOrderReceiptLine.Item.StockUOM
            label is "StockUOM"
            column visible when (IsCatchWeightAndNotIsSerialRequiredAtReceiptForAdjustment)
