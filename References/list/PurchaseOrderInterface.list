AvailablePurchaseRequestList is a List
    title is "AvailableRequests"
    initially display search
    no data message is "No_new_Requests_Available"
        icon is icon.icon-empty-no-orders-new
    Display Fields
        Company
        Item
            link is ItemDashboard
            raise yellow alert when (ContractHasError)
                mouse over text is "<DerivedContractErrorMessage>"
            sort order is ByItem
        Description
            raise blue alert when (SpecialOrService)
                mouse over text is "<SpecialOrServiceMessage>"
        Vendor
            allow update
            raise blue alert when (Vendor entered)
                mouse over text is "<Vendor.VendorName>"
            sort order is ByVendor
        PurchaseFromLocation
        Buyer
            allow update
            raise blue alert when (Buyer entered)
                mouse over text is "<Buyer.Employee.Name.PreferredFirstAndLastName>"
            sort order is ByBuyer
        DeliveryMethod
        PurchaseOrderInterface.SourceDocumentOrigin
            label is "System"
        PurchaseOrderInterface.SourceDocumentNumeric
            label is "SourceDocument"
            link is ViewRequisition
            raise blue alert when (HasSomeRequisitionComment)
                mouse over text is "RequisitionCommentsOrAttachmentsExist"
        PurchaseOrderInterface.LineNumber
            label is "Line"
            link is ViewRequisitionLine
            raise red alert when (MissingBuyerOrVendorOrCost)
                mouse over text is "<DerivedMissingBuyerOrVendorOrCostMessage>"
        Requester
            raise blue alert when (Requester entered)
                mouse over text is "<Requester.Employee.Name.PreferredFirstAndLastName>"
        PurchaseOrderInterface.RequestingLocation
        RequestedDeliveryDate
            allow update
            raise red alert when (MoreThanOneDayOld)
                mouse over text is "<MoreThanOneDayOldMessage>"
            raise yellow alert when (OneDayOld)
                mouse over text is "<OneDayOldMessage>"
            sort order is ByRequestedDeliveryDate
        AllocationPriority
            label is "Priority"
        ShipToLocation
        POCode
        Quantity
            allow update
        EnteredUOM
            label is "BuyU\\O\\M"
        EnteredUnitCost
            label is "UnitCost"
            allow update
        HSNSACCode
            allow update
            column visible when (IsHSNSACCodeEnabled)
        TotalCost
    Instance Selection
        where (IsForManagePurchaseRequests
        and   not IsReplenishmentWorksheet
        and   IsValidForActorContext
        and   not IsSelected
        and   (actor.agent(Employee).Employee not entered
            or    IsInBuyerFilter))
    form is PurchaseOrderInterfaceForm
    restrict action UnselectAllMyRecords
    restrict action AddToPurchaseOrder
    restrict action SendToEvent
    restrict action CreateEventWorksheet
    restrict action CreatePurchaseOrder
    restrict action ReplenishmentPOWorksheetSelectAllRecords
    restrict action ReplenishmentPOWorksheetUnselectAllRecords
    restrict action ReplenishmentPOWorksheetRelease
    restrict action RepelenishmentPOWorksheetUpdate
    restrict action ReplenishmentPOWorksheetCreate
    restrict action ReplenishmentPOWorksheetDelete
    restrict action ReplenishmentPOWorksheetSelectRecord
    restrict action ReplenishmentPOWorksheetUnSelectRecord
    restrict action MobileUpdate
    Actions
        action is SelectForPurchaseOrder
            action icon is apply
            label is "Select"
        action is SelectAll
            action icon is process
            label is "AdvancedSelection"
            hide when invalid
        action is open
            label is "_"
        action is search
            label is "_"
