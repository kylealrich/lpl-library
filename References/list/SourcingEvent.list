AllEvents is a List
    title is "Events"
    single select
    search form is SupplierSearchEvents
        always display
        use as filter
    Display Fields
        SourcingEvent
            label is "Event#"
            raise yellow alert when (RequireBidBond)
                mouse over text is "ABidBondMustBeProvidedWhenRespondingToThisEvent"
            sort order is primary
                is default descending
        LastVersionNumber
            label is "Version"
        Name
        Category
            label is "Category"
            select is SupplierCategories
            sort order is ByCategory
        SubCategory
            label is "SubCategory"
            select is SupplierSubCategories
        SourcingEventType
            label is "Type"
            select is SupplierEventTypes
            sort order is ByType
        EventReference
            label is "Reference"
        CurrencyCode
            label is "Currency"
        OpenDate
            raise blue alert when (CloseDateEntered)
                mouse over text is "OpenDateIs<DerivedTextOpenDate>"
        CloseDate
            label is "FirstCloseDate"
            raise blue alert when (CloseDateEntered)
                mouse over text is "CloseDateIs<DerivedCloseDate>"
            sort order is ByCloseDate
        DerivedStatusForSupplier
            label is "Status"
        button of "<ResponseButton>"
            visible when (DisplayEditButton)
            form invoke is CreateDraftSourcingEventResponse
        button of "BidTabulation"
            visible when (DisplayBidTabulationReport)
            link is BidTabulation
    Instance Selection
        where ((OpenPreview
            or    OpenAvailable
            or    OpenPending
            or    Status.Suspended
            or    Status.Cancelled
            or    Status.Closed)
        and   (PostingOptions.DisplayOnPortal
            or    InvitedSuppliers)
        and   (not actor.agent(SupplierSourceId).InactiveAtSomeLevel
            and   Company.SourcingGroup = actor.agent(SupplierSourceId).SupplierGroup
            or    actor = "Anonymous"
            and   Company.SourcingGroup = session.key.SupplierGroup))
    form is SupplierPortalSummary
    restrict action Draft.CreateEventTemplate
    restrict action Draft.Create
    restrict action Draft.CreateEventFromEvent
    restrict action Draft.CreateEventFromEventTemplate
    restrict action Draft.CreateEventFromTemplateOverrideCompany
    restrict action Draft.Release
    restrict action Draft.GetSuppliers
    restrict action Open.Notified.Cancel
    restrict action Open.Notified.CancelRemaining
    restrict action Open.Notified.FinalAward
    restrict action Open.Notified.CreateOutput
    restrict action Open.Notified.CloseEvent
    restrict action Open.NeedsApproval.Approve
    restrict action Open.NeedsApproval.Disapprove
    restrict action Open.NeedsApproval.Reject
    restrict action Open.Notified.Update
    restrict action Open.Amended.Update
    restrict action Open.Amended.Release
    restrict action Cancelled.Reinstate
    restrict action Draft.CreateInternalEvent
    restrict action Draft.Delete
    restrict action Open.Notified.ChangeToBestAndFinalOffer
    Actions
        action is open
            label is "ViewEvent"
        navigation is SupplierResponseCompositeNav
            label is "ViewResponse"
            hide when invalid
            valid when (DisplayViewResponseButton)
