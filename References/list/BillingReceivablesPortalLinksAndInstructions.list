Attachments is a List
    initially display search
    no data message is "No_Portal_Attachments_Exist"
    Display Fields
        DisplayOrder
            sort order is ByDisplayOrder
                is default
        Instructions
            label is "Description"
            allow update
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
        DisplayToAnonymousUsers
            allow update
        Active
            allow update
    Instance Selection
        where (AttachmentExists)
    form is AttachmentForm
    restrict action CreateLink
    restrict action CreateInstructions
    restrict action UpdateLink
    restrict action UpdateInstructions
    restrict action Update
    Actions
        action is CreateAttachment
            label is "Create"
        action is UpdateAttachment
            label is "Update"
        action is save
        navigation is UpdateDisplayOrderNav
            label is "UpdateDisplayOrder"
