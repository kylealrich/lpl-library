AssetAdjustmentDashBoardList is a List
    title is "AssetAdjustments"
    single select
    search form is CardViewSearch
        use as filter
    implements DashBoardView
        use 12 column grid
    no data message is "There_are_no_Asset_Adjustments"
        icon is icon.icon-empty-no-orders
    card view is AdjustmentCardViewBasic
        row separator is horizontal rule
    Display Fields
    Instance Selection
        where (RecordIsSelected)
    Detail Sections
        Main
            visible when (IsMainAdjusted)
            triple width
            form is AssetAdjustmentMain
        Items
            visible when (AssetItemsAdjustmentExists)
            triple width
            list is AssetItemsAdjustmentRel.AssetItemAdjustment
        Books
            visible when (AssetBookAdjustmentExists)
            triple width
            list is AssetBookAdjustmentRel.AssetBookAdjustment
        Transactions
            visible when (DisplayAdjustmentTransactions)
            triple width
            list is AdjustmentTransactionsRel.AssetTransactionView
        BookTransactions
            visible when (DisplayAdjustmentBookTransactions)
            triple width
            list is AdjustmentBookTransactionRel.AssetBookTransactionView
