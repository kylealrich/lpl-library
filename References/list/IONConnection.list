IONConnections is a List
    is primary
    title is "IONConnections"
    Display Fields
        Description
            label is "Connection"
            left align
        Status
            left align
            link is IONConnection
            raise red alert when (Alert.Red)
                mouse over text is "<AlertMessage>"
            raise yellow alert when (Alert.Yellow)
                mouse over text is "<AlertMessage>"
            raise green alert when (Alert.Green)
    Detail Sections
        IONOutboxQueue
            title is "Queue"
            visible when (UsesOutboxQueue)
            list is IONOutboxQueueRel.NewConnectionList
        IngestionQueue
            title is "Queue"
            visible when (UsesDataLakeQueue)
            list is DataLakeQueueRel.ConnectionList
        AsyncRequests
            title is "AsyncRequests"
            visible when (HasAsyncRequests)
            list is AsyncRequestsRel.SimpleActionRequestList
