BankStatementPositionList is a List
    is primary
    title is "CashPositionWorksheet"
    no data message is "No_transactions_exist_for_Cash_Position_Worksheet"
        icon is icon.icon-empty-no-tasks
    Display Fields
        CashTransactionCategory
            sort order is ByNaturalBalance
                is default
        group label is "Forecast"
            ForecastAmount
                label is "Amount"
                link is ForecastAmountDetail
                total
            check control
                valid when (not IsFinalized)
                visible when (CanViewBankStatementPositionSelect)
                checked state is SelectedForecastAmount
                check action is CopyForecastAmount
                uncheck action is InitializePositionAmount
                label is "Select"
        group label is "Transaction"
            TransactionAmount
                label is "Amount"
                link is TransactionAmountDetail
                total
            check control
                valid when (not IsFinalized)
                visible when (CanViewBankStatementPositionSelect)
                checked state is SelectedTransactionAmount
                check action is CopyTransactionAmount
                uncheck action is InitializePositionAmount
                label is "Select"
        PositionAmount
            allow update
            total
        Comment
            allow update
    Actions
        action is helper list
            action icon is hidden
            label is "NewCategory"
            hide when invalid
            valid when (not IsFinalized)
        action is open
            label is "_"
        action is save
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is search
            label is "_"
        action is refresh
            label is "_"
