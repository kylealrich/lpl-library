AdjustmentsForApplication is a List
    implements InlineCreate
    suppress sub-totals
    Display Fields
        AdjustmentReason
            allow update
            select is ReceivableReasonCodeInvoiceSelectionList
            column visible when (not ReceivablePaymentRel.IsZeroPayment)
        AdjustmentReason
            allow update
            select is ReceivableReasonCodeOverShortList
            column visible when (ReceivablePaymentRel.IsZeroPaymentAllowAdjustments)
        CreditAdjustAmount
            label is "AdjustAmount"
            allow update
            total
        Description
            allow update
        DistributionAccount
            allow update
        group label is "IncomeWithholding"
            ARIncomeWithholdingCode
                label is "Code"
                allow update
                visible when (CompanyHasATaxWithholdingReceivableReason)
                column visible when (CompanyHasATaxWithholdingReceivableReason)
            ARIncomeWithholdingDocumentNumber
                label is "DocumentNumber"
                allow update
                visible when (CompanyHasATaxWithholdingReceivableReason)
                column visible when (CompanyHasATaxWithholdingReceivableReason)
        button of "<Attachment.Title>"
            view Attachment.File
            label is "Attachment"
            left align
            display as link
    create action is InvoiceAdjustment
    restrict action LineInvoiceAdjustment
    restrict action LineUpdate
    restrict action LinePurge
    Actions
        action is InvoiceAdjustment
            action icon is create
        action is AddAttachment
            action icon is attach
            hide when invalid
        action is open
            label is "_"
        action is save
            label is "_"
        action is Purge
            action icon is delete
            label is "_"
        action is search
            label is "_"
