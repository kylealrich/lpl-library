ApplicationReversalResultList is a List
    title is "ApplicationReversalCreationResult"
    initially display search
    no data message is "NoReversalResultsExist.RunReversalActionToSeeResults"
        button of "ApplicationReversalCreation"
            action is ApplicationReversalCreation
    Display Fields
        PrmCompany
            sort order is ByCompany
        PrmCompanyGroup
        ReceivablesJobResult
            label is "ReversalResult"
        RunTime
            sort order is ByRunTime
                is default
        Status
            display as tag
                color of gray when (Status.InProcess)
                color of green when (Status.Complete)
                color of red when (Status.Incomplete)
        UpdateRecords
        button of "ViewReversalResult" with icon.pdf-file
            visible when (ReversalResult entered)
            link is ViewReversalResult
    Instance Selection
        where (JobType.ApplicationReversalCreation)
    form is ApplicationReversalResultComposite
    restrict action Create
    restrict action PerformTransactionStatusUpdate
    Actions
        action is ApplicationReversalCreation
        action is search
            label is "_"
        action is open
            label is "_"
        action is DeleteReversalResults
            action icon is delete
            label is "_"
            mouse over text is "Delete"
        action is PurgeAllReversalResults
            hide when invalid
        action is refresh
            label is "_"
            hide when invalid
