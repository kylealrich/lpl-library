AdministratorContracts is a List
    title is "AdministratorContracts"
    initially display search
    implements HorizontalScrolling
        freeze first 2 columns
    no data message is "No_contracts_exist._Open_summay_project_and_create_contract."
        icon is icon.icon-empty-no-data
    Display Fields
        DisplayContract
            label is "Contract"
            raise red alert when (ProjectContractInvoiceErrorsExist)
                mouse over text is "<ErrorsExistMF>"
        Description
            raise blue alert when (HasProjectContractComments)
                mouse over text is "CommentsExists"
        ContractID
            label is "ID"
            raise red alert when (NoProjectFundingSourcesDefined)
                mouse over text is "NoProjectFundingSourcesDefinedForContract"
        ContractType
            label is "Type"
        ContractAmount
            label is "Contracted"
        Currency
        TotalDraftBilledAmount
            label is "DraftInvoiced"
        TotalJournalizedBilledAmount
            label is "Invoiced"
        TotalDraftRecognizedAmount
            label is "DraftRecognized"
        TotalJournalizedRecognizedAmount
            label is "Recognized"
        DerivedLastInvoiceDate
            label is "LastInvoiceDate"
    Instance Selection
        where (HasAdministratorContract)
    restrict action CopyVendorContractToPosting
