DocumentARPaymentImportList is a List
    title is "DocumentPayments"
    initially display search
    no data message is "No_Document_Payment_Interface_Records_Exist"
        icon is icon.icon-empty-no-notes
        button of "CreateInterfaceRecord"
            action is Create
    Display Fields
        DocumentARPaymentImport
            label is "ImportID"
            raise red alert when (RecordInError)
                mouse over text is "ErrorExists"
        Company
        Customer
        InterfacedCustomer
            label is "ExternalCustomer"
        TransNbr
            label is "Payment"
        TransactionAmount
            label is "Amount"
            allow update
        RecordInError
    Instance Selection
        where (IsValidForActorContext)
    Actions
        action is InterfacePayments
            action icon is transfer
        action is ResetErrorMessage
            action icon is undo
            hide when invalid
        action is Create
            label is "_"
        action is open
            label is "_"
        action is save
            label is "_"
        action is Delete
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
    Detail Sections
        Errors
            list is DocumentARPaymentImportErrorRel.DocumentARPaymentImportErrorList
