ActionPendingInServerWorkunits is a List
    title is "ActionPendingInServerWorkUnits"
    initially display search
    Display Fields
        PfiWorkunit
            sort order is LiveWorkunits
                is default
        WorkTitle
            sort order is ByWorkTitleWorkunitLive
        FlowDefinition
            sort order is ByFlowDefWorkunitLive
        Status
            sort order is ByStatusWorkunitLive
        ExecutionStartDate
            sort order is ByExecutionStartDateWorkunitLive
        ElapsedTimeAsString
            label is "ElapsedTime"
        ActionDate
            label is "ActionDate"
        ActionPendingInServerElapsedTimeAsString
            label is "PendingElapsedTime"
        ServiceDefinition
            sort order is ByServDefWorkunitLive
    Instance Selection
        where (Status.Processing
        and   IsActionPendingInServer)
    form is WorkunitComposite
    restrict action CreateComparisonWorkunit
    restrict action Create
    restrict action Update
    restrict action Delete
    restrict action Restart
    restrict action Release
    restrict action MoveWorkunitToHistory
    restrict action UpdateParentStatus
    restrict action ScheduleMoveToWorkUnitHistory
    restrict action Proceed
    restrict action ScheduleWorkUnitDeletion
    restrict action DeleteActivitiesAndVariables
    restrict action ScheduleLogsAndActivitiesDeletion
