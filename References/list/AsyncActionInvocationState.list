ActorAsyncActionInvocationStateList is a List
    title is "JobStatusList"
    initially display search
    Display Fields
        DataArea
        AsyncActionInvocationStatus
        AsyncActionInvocationsInStateCount
            label is "StatusJobCount"
        BeginModOffsetDays
            allow update
        BeginModTimeStamp
            allow update
        ThruBeginModTimeStamp
            label is "SelectingJobsModifiedSince"
    Instance Selection
        where (Actor = actor
        and   DataArea = parentcontext.dataarea)
    form is AsyncActionInvocationStateForm
    restrict action Create
    restrict action Delete
    restrict action AddStateToGlobalChart
    restrict action AddAllStatesToGlobalChart
    Charts
        AsyncActionInvocationStatusPieChart is a PieChart
            title is "JobStatusPieChart"
            chart list
            is default
            show legend
            hide labels
            element name is untranslatable:"<ThruBeginModTimeStampText>"
            element value is AsyncActionInvocationsInStateCount
        AsyncActionInvocationStatusBarChart is a BarChart
            title is "JobStatusBarChart"
            chart list
            element name is untranslatable:"<ThruBeginModTimeStampText>"
            element value is AsyncActionInvocationsInStateCount
