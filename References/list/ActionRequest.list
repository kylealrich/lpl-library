ActionRequestList is a List
    is primary
    title is "AllActionRequests"
    initially display search
    Display Fields
        Title
        BusinessClass
            sort order is ByBusClass
                is default
        BusinessAction
        create stamp
            label is "Created"
            sort order is ByCreateStamp
        create stamp.actor
            label is "Actor"
        WorkUnit
            link is WorkUnitRouting
            sort order is ByWorkUnit
        Status
            sort order is ByStatus
        ProcessName
    open action is NotInProcess.UpdateParameters
    open action is InProcess.UpdateParameters
    open action is Rejected.ViewParameters
    open action is Complete.ViewParameters
    open action is NotInProcess.View
    open action is InProcess.View
    open action is Rejected.View
    open action is Complete.View
    Detail Sections
        show single panel tab
        ApprovalTracking
            visible when (HasProcessIndicator)
            form is ApprovalTracking
