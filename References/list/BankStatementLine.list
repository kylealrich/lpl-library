BankStatementLineClassificationExceptions is a List
    title is "ClassificationExceptions"
    no data message is "No_Classification_Exceptions_to_view"
        icon is icon.icon-empty-no-tasks
    Display Fields
        BankStatementLine.LineNumber
            raise yellow alert when (ManuallyCreatedForImportedStatement)
                mouse over text is "BankStatementLineWasManuallyCreatedForAnImportedBankStatement"
        BankStatementLine.SequenceNumber
            raise red alert when (MultiRedAlertErrorsExist)
                mouse over text is "<DerivedFirstErrorMessage>"
            raise blue alert when (IsOriginalLine)
                mouse over text is "BankStatementLineHasBeenSplit;TheOriginalLineAmountWas<OriginalLineAmount>"
        RelatedReference
        Description
            show up to 100 characters
        CashTransactionCategory
            allow update
            select is CashTransactionCategorySelect
            raise yellow alert when (Uncategorized)
                mouse over text is "UncategorizedTransaction"
        DebitCreditIndicator
        LineAmount
            allow update
            link is BankStatementLineDetails
            raise red alert when (Uncoded)
                mouse over text is "NoDistributionsHaveBeenDefined"
            raise yellow alert when (DistributionsOutOfBalance)
                mouse over text is "DistributionsAreOutOfBalance"
            raise blue alert when (ReconSummaryRecord.BankStatementReconciliation.SummaryIncludesReconDiff)
                mouse over text is "ReconciledDifferenceBetweenStatementLineAndRelatedMatchedTransactions"
            total
    Instance Selection
        where (DisplayGainLossLine)
