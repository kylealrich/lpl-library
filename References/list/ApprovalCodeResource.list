Approvers is a List
    is primary
    title is "ApprovalLevels"
    no data message is "Add_a_new_Approval_Level"
        icon is icon.icon-empty-new-project
        button of "Create"
            action is Create
    Display Fields
        group label is "ApprovalLevel"
            ApprovalLevel
                label is "Current"
                sort order is ByApprovalLevel
                    is default
            NewApprovalLevel
                label is "New"
                allow update
        group label is "Approver"
            Approver
                label is "ID"
                allow update
            Approver.PreferredSimplePresentationName
                label is "Name"
                show up to 15 characters
                raise red alert when (ApproverResourceInactive)
                    mouse over text is "ResourceIsInactive"
        group label is "ApprovalTeam"
            ApprovalTeam
                label is "Name"
                allow update
                raise red alert when (TeamHasNoMembers)
                    mouse over text is "TeamHasNoMembers"
            ApprovalTeam.Description
                show up to 15 characters
                raise red alert when (ApproverTeamMemberInactive)
                    mouse over text is "TeamHasInactiveResourceMember"
        MaxApprovalAmount
            allow update
            sort order is ByAmount
            column visible when (ApprovalCode.ApprovalCodeUsesMaximumAmounts)
        EscalationHours
            allow update
            raise red alert when (InvalidEscalation)
                mouse over text is "HasInvalidEscalationSetting;OpenRecordForDetails"
