ColumnarList is a List
    title is "Invoices"
    always display search
    search form is inline
        Layout
            six column distributed
                Company
                Customer
                    select is CustomerSelect
                ReceivableInvoiceType
                    label is "Type"
                ReceivableInvoice
                    label is "InvoiceNumber"
                TransactionDate
                    label is "InvoiceDate"
                SignedTransactionAmount
                    label is "InvoiceAmount"
        use as filter
    implements ColumnarView
    Display Fields
        Company
        Customer
        group label is "Invoice"
            ReceivableInvoiceType
                label is "Type"
            ReceivableInvoice
                label is "InvoiceNumber"
            TransactionDate
                label is "Date"
            SignedTransactionAmount
                label is "Amount"
    Instance Selection
        where (IsValidForActorContext)
    restrict action Create
    restrict action Released.Transfer
    restrict action SpeedEntry
    Actions
        action is RefreshData
        action is open
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
