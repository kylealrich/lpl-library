IDMRichTextLineCustomList is a List
    title is "_"
    single select
    implements InlineCreate
    Display Fields
        BusinessClass
        BusinessField
            select is BusinessFieldTextOnlyRel.BusinessFieldList
        TextFormat
            allow update
            display as tag
                color of green when (TextFormat.PlainText)
                color of blue when (TextFormat.RichText)
    open action is restricted
    Actions
        action is UsePlainText
            action icon is apply
            hide when invalid
            valid when (TextFormat.RichText)
        action is UseRichText
            action icon is apply
            hide when invalid
            valid when (TextFormat.PlainText)
        action is Create
            action icon is create
            label is "_"
            hide when invalid
        action is save
            action icon is save
            label is "_"
            hide when invalid
        action is Delete
            action icon is delete
            label is "_"
            hide when invalid
