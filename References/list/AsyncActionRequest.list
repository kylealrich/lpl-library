AsyncActionRequestInProcessReplications is a List
    title is "AsyncRequestsInProcess"
    initially display search
    no data message is "NoReplicationInProcess"
        icon is icon.icon-empty-no-orders-new
    Display Fields
        MappingField1
            label is "ReplicationSet"
            bold
        MappingField2
            label is "ReplicationBusinessClass"
        ImplementingClass
            raise red alert when (DBSessionDebugIsEnabled)
                mouse over text is "DBSessionDebugIsEnabled"
            sort order is ByDataAreaAction
                is default
        AsyncAction
            raise red alert when (FailedTriggersExist)
            raise yellow alert when (WaitingOnAnyType)
                mouse over text is untranslatable:"<ActionYellowAlertMessage>"
            sort order is ByAction
        CreatedStamp
            label is "Created"
            sort order is ByCreatedStamp
        group label is "ExecutionDetail"
            TimeToExec
                label is "TimeToExecute"
                raise blue alert when (PendingScheduling)
                    mouse over text is untranslatable:"<DerivedScheduleString>"
                sort order is ByTimeToExec
            PendingScheduling
                display as tag
                    color of purple when (PendingScheduling)
            IsScheduled
                label is "Recurring"
    Instance Selection
        where (DataArea = parentcontext.dataarea
        and   NonFinishedTriggersExist
        and   (ImplementingClass = "ReplicationSet"
            or    ImplementingClass = "RepSetBC"))
    restrict action EnableOrDisableMaintenanceRequests
    Actions
        action is refresh
        action is saved searches
        action is Delete
    Detail Sections
        Triggers
            title is "Triggers"
            list is AsyncActionTrigger set.AsyncActionTriggerList
        RequestRunStatus
            form is RequestRunStatusForm
        RelatedActions
            title is "RelatedActions"
            visible when (InvokeeSetExists)
            list is InvokedChildrenRel.AsyncActionRequestList
        InvokedFromRequest
            visible when (InvokedFromExists)
            form is InvokedFrom.AsyncActionRequestForm
        ActionGroupMembers
            list is ActionGroupRel.AsyncActionRequestList
        BackgroundGroupMembers
            visible when (BackgroundGroupSetExists)
            list is BackgroundGroupRel.AsyncActionRequestList
        SynchronizedMembers
            visible when (HasSynchronizedGroup)
            list is SynchronizedGroupMembersRel.primary
