AdjustmentsHomePage is a List
    title is "LeaseAdjustments"
    single select
    no data message is "NoLeaseAdjustmentsInProgress"
        icon is icon.icon-empty-no-data
    card view is AdjustmentsHomePageCardView
        row separator is horizontal rule
        sort order is ByLeaseAdjustmentDate
            is default
            label is "ByLeaseAdjustmentDate"
    Display Fields
    Instance Selection
        where (IsAdjustmentInProgress
        and   IsValidForActorContext)
    restrict action Unreleased.Create
