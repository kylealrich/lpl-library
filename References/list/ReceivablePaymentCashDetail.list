CashDetails is a List
    implements InlineCreate
    suppress sub-totals
    no data message is "No_Payment_Cash_Details_Exist"
    Display Fields
        CashFinanceCodeBlock
            label is "FinanceStructure"
            allow update
        DistributionAmount.CurrencyAmount
            label is "TransactionAmount"
            allow update
            total
        DerivedOpenAmount
            total
            column visible when (ReceivablePayment.DetailRNADistributions)
        DerivedStatus
            raise blue alert when (ShowReleaseInProcessMessage)
                mouse over text is "ReleaseIsProcessingInTheBackground"
    Actions
        action is ReverseForUpdate
            hide when invalid
        action is Create
            action icon is create
            label is "_"
        action is open
            label is "_"
        action is save
            label is "_"
        action is save and new
            label is "_"
        action is Delete
            action icon is delete
            label is "_"
        action is search
            label is "_"
        action is refresh
            label is "_"
    Detail Sections
        AppliedCashDetails
            visible when (ShowAppliedCashDetails)
            list is CashDetailApplication set.primary
