BudgetTemplateList is a List
    is primary
    title is "BudgetTemplates"
    initially display search
    no data message is "Add_a_new_Budget_Template"
        description is "Open_a_Budget_Scenario_to_create_Budget_Template"
        icon is icon.icon-empty-new-project
    Display Fields
        BudgetTemplate
            raise yellow alert when (HasPending)
                mouse over text is "<PendingAlert>"
        Description
            allow update
        Scenario
        Scenario.ScenarioDescription
            label is "ScenarioDescription"
        Status
            display as tag
                color of gray when (IsNonActiveStatus)
                color of yellow when (Status.Processing)
                color of green when (Status.Ready)
    restrict action Create
    Actions
        action is Activate
            hide when invalid
        action is LazyActivate
            hide when invalid
        action is ProcessPending
            hide when invalid
        action is ProcessPendingRemove
            hide when invalid
        action is LazyProcessPending
            hide when invalid
        action is Deactivate
            hide when invalid
        action is DeleteTemplate
            hide when invalid
        action is RecoverAfterProcessingError
            hide when invalid
        action is Create
            action icon is create
            label is "_"
            mouse over text is "Create"
            hide when invalid
        action is open
            action icon is open
            label is "_"
            mouse over text is "Open"
        action is Delete
            action icon is delete
            label is "_"
            mouse over text is "Delete"
            hide when invalid
        action is search
            label is "_"
            mouse over text is "Search"
        action is refresh
            label is "_"
