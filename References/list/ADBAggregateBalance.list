ADBAggregateBalanceList is a List
    is primary
    title is "AggregateAndAverages"
    suppress sub-totals
    Display Fields
        AccountingEntity
            label is "<FinanceEnterpriseGroup.AccountingEntityLabel>"
        AccountingUnit
            label is "<FinanceEnterpriseGroup.AccountingUnitLabel>"
            column visible when (FinanceEnterpriseGroup.ADBSelection.AccountAndAccountingUnit)
        FinanceDimension1
            label is "<FinanceEnterpriseGroup.FinanceDimension1Label>"
            column visible when (FinanceEnterpriseGroup.ADBSelection.AccountAndDimension1)
        ADBAggregateBalance.GeneralLedgerChartAccount
            label is "<FinanceEnterpriseGroup.AccountLabel>"
            select is PostingADBAccountList
        ADBAggregateBalance.GeneralLedgerCalendarPeriod
            label is "Period"
        NoOfDays
        AccountingEntity.FunctionalCurrency
            label is "Currency"
        BalanceOnPostDate
            label is "AggregateOnPostDate"
            total
        AverageOnPostDate
            total
        BalanceOnTransactionDate
            label is "AggregateOnTransactionDate"
            total
            column visible when (DisplayADBInTransactionDate)
        AverageOnTransactionDate
            total
            column visible when (DisplayADBInTransactionDate)
        QTDAggregateOnPostDate
        QTDAverageOnPostDate
        YTDAggregateOnPostDate
        YTDAverageOnPostDate
