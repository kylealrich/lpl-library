ARToAPInterfaceAvailablePaymentsList is a List
    title is "ARPaymentsAvailableToInterfaceToAP"
    initially display search
    no data message is "No_Open_Payments_Exist"
    Display Fields
        PaymentNumber
        TransactionAmount
            label is "Amount"
        TransientPaymentOpen
            label is "OpenAmount"
        DepositDate
        TransientSelectedForAP
            label is "Selected"
    Instance Selection
        where (IsOpenCustomerPayment
        and   IsValidForActorContext
        and   IsPaymentAmountNotZero
        and   not IsIntercompanyBilling)
    restrict action Unreleased.ClearSelections
    restrict action Unreleased.CreateCustomerPayment
    restrict action Unreleased.CreateCustomerPaymentFromCashApplication
    restrict action Unreleased.CreateDistribution
    restrict action Unreleased.CreateNonARCashPayment
    restrict action Unreleased.Delete
    restrict action Unreleased.DeleteAllApplications
    restrict action Unreleased.ProcessSelections
    restrict action Unreleased.ReleaseBatch
    restrict action Unreleased.TransactionRangeApplication
    restrict action Unreleased.TransactionRangeProjectSelection
    restrict action Unreleased.TransactionRangeSelection
    restrict action Unreleased.Update
    restrict action ReleasedUnassigned.Update
    restrict action ReleasedUnassigned.TransferToNonAR
    restrict action ReleasedUnassigned.AssignCustomer
    restrict action Open.ClearSelections
    restrict action Open.DeleteAllApplications
    restrict action Open.PaymentIntoCredit
    restrict action Open.PaymentTransfer
    restrict action Open.PaymentWriteOff
    restrict action Open.ProcessSelections
    restrict action Open.TransactionRangeApplication
    restrict action Open.TransactionRangeProjectSelection
    restrict action Open.TransactionRangeSelection
    restrict action Open.TransferToNonAR
    restrict action Open.Update
    restrict action Open.UpdateZeroPaymentToHistorical
    restrict action FullyApplied.DeleteAllApplications
    restrict action RefreshData
    restrict action CreateAndReverseAll
    restrict action ReverseAll
    Actions
        action is SelectForAPInterface
            action icon is submit
            hide when invalid
        action is UnSelectForAPInterface
            action icon is submit
            hide when invalid
        action is open
            label is "_"
        action is search
            label is "_"
