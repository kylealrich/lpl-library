BankReconciliationMatchRules is a List
    is primary
    title is "BankReconciliationMatchRules"
    initially display search
    no data message is "Add_a_new_Bank_Reconciliation_Match_Rule"
        icon is icon.icon-empty-new-project
        button of "Create"
            action is Create
    Display Fields
        BankReconciliationMatchRule
            raise yellow alert when (NotInMatchRuleGroup)
                mouse over text is "ReconciliationMatchRuleIsNotAssignedToAReconciliationMatchRuleGroup"
            sort order is primary
        Description
            allow update
        StatementRule
            allow update
        SystemRule
            allow update
        MatchType
            allow update
        UseDayLag
            allow update
        ReconciliationTolerancePercent
            allow update
        ReconciliationToleranceAmount
            allow update
        Active
            allow update
