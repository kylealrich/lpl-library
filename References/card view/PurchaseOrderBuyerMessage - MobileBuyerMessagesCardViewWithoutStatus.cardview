MobileBuyerMessagesCardViewWithoutStatus is a CardView
    show labels
    main column
        ReceiptWithLineDisplay
            no label
        PurchaseOrderReceiptLine.Item
            label is "Item"
        ReceiptQuantityWithUOM
            label is "Received"
        ExcessWithUOM
            label is "Excess"
        button row
            button of "Release"
                visible when (Status.Unreleased)
                action is Unreleased.Release
                display as link
